<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>PJ_NoAir</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
    <label>Asphyxia</label>
    <labelNoun>asphyxia</labelNoun>
    <description>I find your lack of faith disturbing.</description>
    <initialSeverity>0.001</initialSeverity>
    <lethalSeverity>1.5</lethalSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-24.5</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>coughing</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>coughing</label>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.08</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>gasping</label>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>choking</label>
        <minSeverity>0.5</minSeverity>
        <painOffset>0.15</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>suffocating</label>
        <minSeverity>0.8</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <painOffset>0.30</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.7</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>