<Defs>
  <PreceptDef>
    <defName>Corpses_Beautiful</defName>
    <issue>VenerateTheRotten</issue>
    <label>Venerate</label>
    <description>To the ground we return. Rotten corpses remind us of our inevitable end. Just another example of how beautiful life is.</description>
    <impact>Medium</impact>
    <classic>false</classic>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
    <comps>
      <li Class="PreceptComp_SelfTookMemoryThought">
        <eventDef>ObservedLayingRottingCorpse</eventDef>
        <thought>ObservedBeautifulCorpse</thought>
      </li>
    </comps>
	<associatedMemes>
      <li>PlaguemongerMeme</li>
    </associatedMemes>
    <requiredMemes>
      <li>PlaguemongerMeme</li>
    </requiredMemes>
  </PreceptDef>
  
  <PreceptDef>
    <defName>Corpses_Regular</defName>
    <issue>VenerateTheRotten</issue>
    <label>don't care</label>
    <description>Just a regular corpse. No need to venerate that.</description>
    <impact>Low</impact>
    <classic>false</classic>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
	<associatedMemes>
      <li>PlaguemongerMeme</li>
    </associatedMemes>
    <requiredMemes>
      <li>PlaguemongerMeme</li>
    </requiredMemes>
  </PreceptDef>
  
  <ThoughtDef>
    <defName>ObservedBeautifulCorpse</defName>
    <showBubble>false</showBubble>
    <durationDays>1.0</durationDays>
    <stackLimit>1</stackLimit>
    <stackedEffectMultiplier>1</stackedEffectMultiplier>
    <stages>
      <li>
        <label>Saw beautiful corpse</label>
        <description>The sickly-sweet aroma of decay tells us that life is birthed from death. Glorious.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <IssueDef>
    <defName>VenerateTheRotten</defName>
    <label>Rotten Corpses</label>
    <iconPath>UI/Issues/RottenCorpse</iconPath>
  </IssueDef>
  </Defs>