<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>More Archotech Garbage Reupload</li>
        </mods>
        <match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>

                <!-- Helmet -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="APA_HelmetBase"]/costList</xpath>
                    <value>
                        <costList>
                            <ArchotechScrap>400</ArchotechScrap>
                            <ComponentSpacer>15</ComponentSpacer>
                        </costList>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="APA_HelmetBase"]/recipeMaker/recipeUsers</xpath>
                    <value>
                        <recipeUsers>
                            <li>ArchBench</li>
                        </recipeUsers>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="APA_HelmetBase"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite>ArchoTechTierThree</researchPrerequisite>
                    </value>
                </li>

                <!-- Armor -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="APA_ArmorBase"]/costList</xpath>
                    <value>
                        <costList>
                            <ArchotechScrap>600</ArchotechScrap>
                            <ComponentSpacer>25</ComponentSpacer>
                        </costList>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="APA_ArmorBase"]/recipeMaker/recipeUsers</xpath>
                    <value>
                        <recipeUsers>
                            <li>ArchBench</li>
                        </recipeUsers>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="APA_ArmorBase"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite>ArchoTechTierThree</researchPrerequisite>
                    </value>
                </li>
                
            </operations>
        </match>
    </Operation>
</Patch>