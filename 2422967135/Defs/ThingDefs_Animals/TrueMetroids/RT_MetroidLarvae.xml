		<label>Metroid Larva</label>
		<race>RT_MetroidLarvae</race>
		<combatPower>200</combatPower>
		<ecoSystemWeight>1.4</ecoSystemWeight>
		<wildGroupSize>
			<min>3</min>
			<max>6</max>
		</wildGroupSize>
		<lifeStages>
		  <li>
			<label>metroid larva</label>
			<labelPlural>metroid larva</labelPlural>
			<bodyGraphicData>
