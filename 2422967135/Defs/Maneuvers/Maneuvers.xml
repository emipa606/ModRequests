<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--Maneuvers that are used to define age and food gain for attacks-->

  	<ManeuverDef>
		<defName>RT_Lifedrain</defName> <!--The name of this specific maneuver-->
		<requiredCapacity>RT_Lifedrain</requiredCapacity> <!-- Toolcapacity needed for this to proc. Defined in ToolCapacity.xml -->
			<verb Class="RT_Core.VerbProperties_AbsorbNeed">
			<verbClass>RT_Core.Verb_AbsorbNeed</verbClass>
			<meleeDamageDef>RT_Lifedrain</meleeDamageDef> <!--Definition used in the melee attacks. Def found in Damage_Rimtroid.xml-->
				<ageDaysAmount>5</ageDaysAmount><!--How many days a metroid gains when an attack lands-->
  				<absorbAmount>0.05</absorbAmount><!--Value of food gained per hit. 1 is 100% food-->
  				<stopFeedingAt>0.8</stopFeedingAt><!--When the metroid should stop attacking for food. 1 is 100%-->
		</verb>
		<logEntryDef>MeleeAttack</logEntryDef>
		<combatLogRulesHit>Maneuver_Smash_MeleeHit</combatLogRulesHit>
		<combatLogRulesDeflect>Maneuver_Smash_MeleeDeflect</combatLogRulesDeflect>
		<combatLogRulesMiss>Maneuver_Smash_MeleeMiss</combatLogRulesMiss>
		<combatLogRulesDodge>Maneuver_Smash_MeleeDodge</combatLogRulesDodge>
	</ManeuverDef>

