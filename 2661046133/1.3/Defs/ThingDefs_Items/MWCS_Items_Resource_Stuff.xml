<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>MW_Coal</defName>
    <label>coal</label>
    <description>An brittle, sedimentary black rock containing high amounts of carbon. Mainly used to fuel primitive-level work-stations.</description>
    <graphicData>
      <texPath>Item/Resource/Coal</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>0.5</MarketValue>
      <RoyalFavorValue>0.001</RoyalFavorValue>
      <Mass>0.01</Mass>
      <StuffPower_Armor_Sharp>0.25</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.25</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.50</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>0</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.10</SharpDamageMultiplier>
      <BluntDamageMultiplier>2.00</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <smallVolume>true</smallVolume>
    <deepCommonality>1.5</deepCommonality>
    <deepCountPerPortion>10</deepCountPerPortion>
    <deepLumpSizeRange>10~20</deepLumpSizeRange>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>false</smeltable>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <appearance>Metal</appearance>
      <commonality>0.001</commonality>
      <color>(66,66,66)</color>
      <constructEffect>ConstructMetal</constructEffect>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statOffsets>
        <Beauty>-10</Beauty>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>0.3</MaxHitPoints>
        <Flammability>1</Flammability>
        <Beauty>-2</Beauty>
        <WorkToMake>1.5</WorkToMake>
        <WorkToBuild>1.5</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>1.0</MeleeWeapon_CooldownMultiplier>
      </statFactors>
    </stuffProps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <allowedArchonexusCount>10</allowedArchonexusCount>
  </ThingDef>
  
