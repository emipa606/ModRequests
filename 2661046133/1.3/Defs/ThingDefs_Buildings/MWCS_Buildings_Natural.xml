<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="RockBase">
    <defName>MW_MineableCoal</defName>
    <label>coal ore</label>
    <description>Rock containing bits of coal.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(33,33,33)</color>
      <colorTwo>(66,66,66)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1500</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>MW_Coal</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.50</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>15~30</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

