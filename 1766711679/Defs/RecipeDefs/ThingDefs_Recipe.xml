<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef Name="TransmuteApparel" Abstract="True">
    <jobString>Performing transmutation ritual.</jobString>
    <workAmount>5000</workAmount>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <requiredGiverWorkType>Crafting</requiredGiverWorkType>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    <fixedIngredientFilter>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <recipeUsers Inherit="False">
      <li>Campfire</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef ParentName="TransmuteApparel">
    <defName>TransmuteWolfHood</defName>
    <label>transmute wolf hood</label>
    <description>Offers the corpse of a wolf as tribute to ritually transmute raw materials into a garment imbued with mystical powers.</description>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Leathers</li>
          </categories>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Corpse_Wolf_Timber</li>
            <li>Corpse_Wolf_Arctic</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Corpse_Wolf_Timber</li>
        <li>Corpse_Wolf_Arctic</li>
        <li>Leather_Wolf</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ET_Apparel_WolfHood>1</ET_Apparel_WolfHood>
    </products>
  </RecipeDef>

  <RecipeDef ParentName="TransmuteApparel">
    <defName>TransmuteDeerHood</defName>
    <label>transmute deer hood</label>
    <description>Offers corpses of deer as tribute to ritually transmute raw materials into a garment imbued with mystical powers.</description>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Leathers</li>
          </categories>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Corpse_Deer</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Leathers</li>
      </categories>
      <thingDefs>
        <li>Corpse_Deer</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ET_Apparel_DeerHood>1</ET_Apparel_DeerHood>
    </products>
  </RecipeDef>

