<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThoughtDef>
		<defName>Rimloop_LoopAwareness</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>Rimloop_LoopAwareness</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
		  <li>
			<label>in time loop</label>
			<description>I'm in a time loop. I could do anything I want... I am IMMORTAL!</description>
			<baseMoodEffect>8</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
  
	<ThoughtDef>
		<defName>Rimloop_DiedInLoop</defName>
		<durationDays>1.0</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stages>
		  <li>
			<label>died in loop</label>
			<description>I died while inside a time loop. I'm happy to be alive, but I lost some of my memories and I also feel quite strange.</description>
			<baseMoodEffect>-13</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>

</Defs>
