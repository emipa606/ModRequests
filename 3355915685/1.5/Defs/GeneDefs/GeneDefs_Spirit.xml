<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <GeneDef>
    <defName>REDS_Ectoplasm_Gene</defName>
    <label>spirit</label>
    <description>Carriers of this gene have transcended the mortal condition. Temporally locked in an archotech pocket dimension.</description>
	<geneClass>REDSpirit.Gene_Resource_Ectoplasm</geneClass>
    <resourceGizmoType>REDSpirit.GeneGizmo_Resource_Ectoplasm</resourceGizmoType>
    <resourceLabel>ectoplasm</resourceLabel>
	<resourceLossPerDay>-0.2</resourceLossPerDay>
    <resourceGizmoThresholds>
      <li>0.25</li>
      <li>0.5</li>
      <li>0.75</li>
    </resourceGizmoThresholds>
    <showGizmoOnWorldView>true</showGizmoOnWorldView>
    <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
    <resourceDescription>A reserve of psychic material which can be gained over time and spent in a variety of ways.\n\nEctoplasm can be increased by phase shifting to the Ethereal form. \n\nIf their ectoplasm reaches zero, {PAWN_nameDef} will feel severely uncomfortable.</resourceDescription>
    <iconPath>UI/Icons/Genes/Gene_Spirit</iconPath>
    <displayCategory>Archite</displayCategory>
	<exclusionTags>
			<li>REDS_DimensionBound</li>
	</exclusionTags>
    <missingGeneRomanceChanceFactor>0.1</missingGeneRomanceChanceFactor>	
    <customEffectDescriptions>
      <li>Gives ectoplasm supply.</li>
    </customEffectDescriptions>	
    <marketValueFactor>5</marketValueFactor>
    <abilities>
      <li>REDS_Invisibility</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>REDS_Invisibility</AbilityDef>
    </descriptionHyperlinks>	
    <biostatCpx>5</biostatCpx>
    <biostatArc>5</biostatArc>
	<biostatMet>0</biostatMet>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<hediffToWholeBody>REDS_Spirit</hediffToWholeBody>
			</li>
		</modExtensions>
  </GeneDef>
  
</Defs>