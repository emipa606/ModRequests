<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=================== Fluids etc =================-->
	<ThingDef ParentName="BaseFilth">
		<defName>REDS_EctoplasmBlood</defName>
		<label>ectoplasm</label>
		<statBases>
			<Beauty>-5</Beauty>
			<Cleanliness>-2</Cleanliness>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/Spatter</texPath>
			<color>(84, 146, 171, 180)</color>
		</graphicData>
		<filth>
			<ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
			<disappearsInDays>35~40</disappearsInDays>
			<rainWashes>true</rainWashes>
			<cleaningWorkToReduceThickness>30</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
		</filth>
	</ThingDef>
	
	<ThingDef ParentName="FilthBlood">
		<defName>REDS_Filth_Ectoplasm_BloodSmear</defName>
		<label>ectoplasm smear</label>
		<graphicData>
			<texPath>Things/Filth/CrawlSmear</texPath>
			<color>(84, 146, 171, 180)</color>
			<graphicClass>Graphic_ClusterTight</graphicClass>
			<drawSize>0.9</drawSize>
		</graphicData>
	</ThingDef>
	
	
</Defs>