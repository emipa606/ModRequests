<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>SeedExtractionBench</defName>
		<label>seed processing bench</label>
		<description>A place for extracting the seeds of plants.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Things/Building/Seed_Bench</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1.5,1.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<drawerType>MapMeshAndRealTime</drawerType>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<SellPriceFactor>0.70</SellPriceFactor>
			<Mass>20</Mass>
		</statBases>
		<uiIconScale>0.8</uiIconScale>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>60</costStuffCount>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>True</useHitPoints>
		<designationCategory>Misc</designationCategory>
		<category>Building</category>
		<fillPercent>0.5</fillPercent>
		<interactionCellIcon>DiningChair</interactionCellIcon>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<size>(1,1)</size>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<castEdgeShadows>true</castEdgeShadows>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<repairEffect>Repair</repairEffect>
		<selectable>true</selectable>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<canOverlapZones>false</canOverlapZones>
		<minifiedDef>MinifiedThing</minifiedDef>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<pathCost>70</pathCost>
		<passability>PassThroughOnly</passability>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<clearBuildingArea>true</clearBuildingArea>
		<recipes />
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<isEdifice>true</isEdifice>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<ai_chillDestination>false</ai_chillDestination>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
			<buildingTags>
				<li>Production</li>
			</buildingTags>
		</building>
		<modExtensions>
			<li MayRequire="owlchemist.perspectivebuildings" Class="Perspective.Offsetter">
				<ignore>False</ignore>
			</li>
		</modExtensions>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li>
				<compClass>CompReportWorkSpeed</compClass>
			</li>
		</comps>
		<designationHotKey>Misc1</designationHotKey>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_ReportWorkSpeedPenalties</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>SeedExtractionSpot</defName>
		<label>seed processing spot</label>
		<description>A place for extracting the seeds of plants. Place this upon the countertop of a stove.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>SeedProcessingSpot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>Transparent</shaderType>
		</graphicData>
		<uiIconPath>Things/Building/Production/CraftingSpot</uiIconPath>
		<drawerType>RealtimeOnly</drawerType>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<statBases>
			<WorkToBuild>0</WorkToBuild>
		</statBases>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>false</useHitPoints>
		<designationCategory>Misc</designationCategory>
		<passability>Standable</passability>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<clearBuildingArea>false</clearBuildingArea>
		<recipes />
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<isEdifice>false</isEdifice>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<ai_chillDestination>false</ai_chillDestination>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
			<buildingTags>
				<li>Production</li>
			</buildingTags>
		</building>
		<modExtensions>
			<li MayRequire="owlchemist.perspectivebuildings" Class="Perspective.Offsetter">
				<ignore>False</ignore>
			</li>
		</modExtensions>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li>
				<compClass>CompReportWorkSpeed</compClass>
			</li>
			<li MayRequire="oskarpotocki.vanillafactionsexpanded.core" Class="VanillaFurnitureExpanded.CompProperties_RandomBuildingGraphic">
				<randomGraphics>
					<li>SeedProcessingSpot</li>
					<li>transparent</li>
				</randomGraphics>
			</li>
		</comps>
		<designationHotKey>Misc1</designationHotKey>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_ReportWorkSpeedPenalties</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
			<li>SeedsPleaseLite.WorkPlacer_OnlyOnBench</li>
		</placeWorkers>
	</ThingDef>
</Defs>