<Patch>
    
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="VPE_Plant_Stinker"]/plant/harvestedThingDef</xpath>
        <value>
            <harvestedThingDef>StinkerFungus</harvestedThingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="VPE_Plant_Glowcap"]/plant/harvestedThingDef</xpath>
        <value>
            <harvestedThingDef>GlowcapFungus</harvestedThingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/RecipeDef[defName="RefineFungus"]/descriptionHyperlinks</xpath>
        <value>
            <ThingDef>StinkerFungus</ThingDef>
            <ThingDef>GlowcapFungus</ThingDef>
        </value>
    </Operation>

</Patch>