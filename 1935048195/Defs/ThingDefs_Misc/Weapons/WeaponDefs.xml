    <graphicData>
      <texPath>Things/Weapon/ThrumboAxe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
	<generateCommonality>0.10</generateCommonality>
    <weaponTags>
      <li>MedievalMeleeAdvanced</li>
    </weaponTags>
    <costList>
      <Leather_Thrumbo>30</Leather_Thrumbo>
      <ThrumboHorn>2</ThrumboHorn>
    </costList>
    <statBases>
	  <MarketValue>1200</MarketValue>
      <Flammability>0.2</Flammability>
      <DeteriorationRate>0.1</DeteriorationRate>
      <Beauty>2</Beauty>
      <EquipDelay>2</EquipDelay>
      <WorkToMake>25000</WorkToMake>
      <Mass>3</Mass>
    </statBases>
    <equippedAngleOffset>5</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>30</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>LongBlades</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>    
</Defs>