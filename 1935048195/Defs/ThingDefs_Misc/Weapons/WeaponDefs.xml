<?xml version="1.0" encoding="utf-8"?>

<Defs>  
  <!--Thrumbo Sword-->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_Thrumblade</defName>
    <label>thrumblade</label>
    <description>A Longsword, made from a Thrumbo horn it's sharp and balanced,it does a bit less damage than an unrefined thrumbo horn but swings faster.</description>
    <graphicData>
      <texPath>Things/Weapon/ThrumboBlade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
	<generateCommonality>0.10</generateCommonality>
    <weaponTags>
      <li>MedievalMeleeAdvanced</li>
    </weaponTags>
    <costList>
      <Leather_Thrumbo>20</Leather_Thrumbo>
      <ThrumboHorn>1</ThrumboHorn>
    </costList>
    <statBases>
	  <MarketValue>1200</MarketValue>
      <Flammability>0.2</Flammability>
      <DeteriorationRate>0.1</DeteriorationRate>
      <Beauty>2</Beauty>
      <EquipDelay>2</EquipDelay>
      <WorkToMake>25000</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <equippedAngleOffset>-55</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>26</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>26</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>LongBlades</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
		<!--Thrumbo Axe-->
