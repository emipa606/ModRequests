<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <ThingDef ParentName="HatMakeableBase">
    <defName>pphhyy_Human_DemigyryphHelm</defName>
    <label>Demigyryph Helm</label>
    <description>Basic Demigyryph Helm worn by demigryph knight orders.</description>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_Anvil</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <!-- <factionPrerequisiteTags>
        <li>Tribal</li>
      </factionPrerequisiteTags> -->
    </recipeMaker>
    <stuffCategories>
        <li>Metallic</li>
      </stuffCategories>
      <costStuffCount>90</costStuffCount>
    <graphicData>
      <texPath>Armor/DemigyryphHelm/DemigyryphHelm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <techLevel>Medieval</techLevel>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>3</Mass>
      <StuffEffectMultiplierArmor>1.00</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.17</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>-6</ShootingAccuracyPawn>
      <PainShockThreshold>0.10</PainShockThreshold>
      <SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/DemigyryphHelm/DemigyryphHelm</wornGraphicPath>
      <!-- <ideoDesireAllowedFactionCategoryTags><li>Tribal</li></ideoDesireAllowedFactionCategoryTags> -->
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

