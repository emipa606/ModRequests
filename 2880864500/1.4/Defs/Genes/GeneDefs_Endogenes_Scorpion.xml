<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <defName>Chitinous</defName>
    <label>chitinous</label>
    <labelShortAdj>chitinous</labelShortAdj>
    <description>Carriers of this gene have a tough chitinous exoskeleton, giving them increased protection from attacks and making them more comfortable in hot temperatures.</description>
    <biostatCpx>2</biostatCpx>
    <biostatMet>-2</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>401</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Chitinous_Icon</iconPath>
    <forcedHeadTypes>
      <li>Chitinous_Average1</li>
      <li>Chitinous_Average2</li>
      <li>Chitinous_Average3</li>
      <li>Chitinous_Narrow1</li>
      <li>Chitinous_Narrow2</li>
      <li>Chitinous_Narrow3</li>
      <li>Chitinous_Gaunt</li>
    </forcedHeadTypes>
    <exclusionTags>
      <li>HairStyle</li>
      <li>Fur</li>
    </exclusionTags>
    <statOffsets>
      <ComfyTemperatureMin>5</ComfyTemperatureMin>
	  <ComfyTemperatureMax>8</ComfyTemperatureMax>
	  <ArmorRating_Sharp>.15</ArmorRating_Sharp>
	  <ArmorRating_Blunt>.15</ArmorRating_Blunt>
    </statOffsets>
    <missingGeneRomanceChanceFactor>0.4</missingGeneRomanceChanceFactor>
    <graphicData>
      <skinIsHairColor>false</skinIsHairColor>
      <tattoosVisible>true</tattoosVisible>
    </graphicData>
  </GeneDef>
  
   <GeneDef ParentName="GeneTailBase">
    <defName>Tail_Stinger</defName>
    <label>Stinger</label>
    <description>Carriers of this gene grow a sharp stinger at the base of their back, which increases melee damage and grants a sting ability.</description>
    <iconPath>UI/Icons/Genes/Gene_Stinger_Icon</iconPath>
    <displayOrderInCategory>1000</displayOrderInCategory>
	  <exclusionTags>
      <li>Tail</li>
    </exclusionTags>
 <abilities>
      <li>Sting</li>
    </abilities>
    <statOffsets>
      <MeleeArmorPenetration>.15</MeleeArmorPenetration>
	  <MeleeDPS>.5</MeleeDPS>
    </statOffsets>
    <biostatCpx>2</biostatCpx>
    <biostatMet>-2</biostatMet>
    <graphicData>
      <graphicPath>Things/Pawn/Humanlike/BodyAttachments/Stinger/Stinger</graphicPath>
      <colorType>Skin</colorType>
      <drawOffsetNorth>(0.1, 0.2, -0.25)</drawOffsetNorth>
      <drawOffsetSouth>(-0.1, -0.1, -0.25)</drawOffsetSouth>
      <drawOffsetEast>(-0.5, -0.1, -0.15)</drawOffsetEast>
    </graphicData>
  </GeneDef>
  
   <GeneDef ParentName="GeneVoiceBase">
    <defName>VoiceInsect</defName>
    <label>insect voice</label>
    <description>Carriers have a chittering voice of an insect.</description>
    <iconPath>UI/Icons/Genes/Gene_VoiceInsect</iconPath>
    <displayOrderInCategory>126</displayOrderInCategory>
    <soundCall>Pawn_BigInsect_Call</soundCall>
    <soundDeath>Pawn_BigInsect_Death</soundDeath>
    <soundWounded>Pawn_BigInsect_Pain</soundWounded>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>hiss</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>chatter</symbol></li>
        <li><symbol>oid</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>
  
  
    <GeneDef>
    <defName>Bee_Pheromone_Gland</defName>
    <label>pheromone gland</label>
    <description>Carriers of this gene have a gland that secreets a pleasing smell, increasing social impact and animal taming and training chance.</description>
    <iconPath>UI/Icons/Genes/Gene_Pheromone_Icon</iconPath>
    <displayOrderInCategory>1000</displayOrderInCategory>
    <statOffsets>
      <SocialImpact>.10</SocialImpact>
	  <TameAnimalChance>.10</TameAnimalChance>
	  <TrainAnimalChance>.10</TrainAnimalChance>
    </statOffsets>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>sweet</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>scent</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>
  
      <GeneDef>
    <defName>Bee_Pollen_Gland</defName>
    <label>pollen gland</label>
    <description>Carriers of this gene have a gland that increases plant yield and gives the ability to deploy a small protective pollen cloud.</description>
    <iconPath>UI/Icons/Genes/Gene_Pollen_Icon</iconPath>
    <displayOrderInCategory>1000</displayOrderInCategory>
    <statOffsets>
      <PlantHarvestYield>.10</PlantHarvestYield>
    </statOffsets>
	 <abilities>
      <li>Pollen</li>
    </abilities>
    <biostatCpx>2</biostatCpx>
    <biostatMet>-2</biostatMet>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>dust</symbol></li>
      </prefixSymbols>
    </symbolPack>
  </GeneDef>
  
  <GeneDef>
    <defName>Bee_Wings</defName>
    <label>bee wings</label>
    <description>Carriers of this gene have a set of strong bee wings growing from their back, increasing movement speed and melee dodge chance.</description>
    <iconPath>UI/Icons/Genes/Gene_Bee_Wings_Icon</iconPath>
    <statOffsets>
      <MoveSpeed>.50</MoveSpeed>
	  <MeleeDodgeChance>.10</MeleeDodgeChance>
    </statOffsets>
    <graphicData>
      <drawLoc>Tailbone</drawLoc>
      <graphicPath>Things/Pawn/Humanlike/BodyAttachments/Bee_Wings/Bee_Wings</graphicPath>
      <colorType>Skin</colorType>
    </graphicData>
    <biostatMet>-2</biostatMet>
    <biostatCpx>2</biostatCpx>
  </GeneDef>

 <GeneDef ParentName="GeneEyeColor">
    <defName>Eyes_Insectoid</defName>
    <label>insect eyes</label>
    <labelShortAdj>bug-eyed</labelShortAdj>
	<displayCategory>Miscellaneous</displayCategory>
    <description>Carriers of this gene have large, compound insectoid eyes which increase vision but are quite ugly to others without them.</description>
    <iconPath>UI/Icons/Genes/Gene_BugEyes_Icon</iconPath>
    <displayOrderInCategory>0</displayOrderInCategory>
	<missingGeneRomanceChanceFactor>0.4</missingGeneRomanceChanceFactor>
	<biostatMet>-1</biostatMet>
    <biostatCpx>1</biostatCpx>
	    <capMods>
      <li>
        <capacity>Sight</capacity>
        <postFactor>1.2</postFactor>
      </li>
    </capMods>
    <graphicData>
      <drawScale>0.28</drawScale>
      <graphicPath>Things/Pawn/Humanlike/HeadAttachments/BugEyes/BugEyes</graphicPath>
    </graphicData>
  </GeneDef>  
  
</Defs>