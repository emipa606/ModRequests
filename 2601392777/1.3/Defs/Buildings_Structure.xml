<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="Wall">
		<defName>Embrasure</defName>
		<label>embrasure</label>
		<description>An impassable wall with a firing port to allow shooting from relative safety. Capable of holding up a roof. The hole makes the wall structurally weaker and looks quite ugly.</description>
		<graphicData>
			<texPath>Things/Building/Linked/Embrasure</texPath>
			<graphicClass>Graphic_Appearances</graphicClass>
		</graphicData>
		<uiIconPath>Things/Building/Linked/Embrasure/EmbrasureSmooth_MenuIcon</uiIconPath>
		<uiIconPathsStuff Inherit="False">
		  <li>
			<appearance>Planks</appearance>
			<iconPath>Things/Building/Linked/Embrasure/EmbrasurePlanks_MenuIcon</iconPath>
		  </li>
		  <li>
			<appearance>Bricks</appearance>
			<iconPath>Things/Building/Linked/Embrasure/EmbrasureBricks_MenuIcon</iconPath>
		  </li>
		</uiIconPathsStuff>
		<!-- <statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToBuild>300</WorkToBuild>
			<Beauty>-5</Beauty>
		</statBases> -->
		<statBases Inherit="False">
		  <MaxHitPoints>200</MaxHitPoints>
		  <WorkToBuild>300</WorkToBuild>
		  <Flammability>1.0</Flammability>
		  <Beauty>-5</Beauty>
		</statBases>
		<fillPercent>0.65</fillPercent>
		<building>
		  <isPlaceOverableWall>false</isPlaceOverableWall>
		  <canPlaceOverWall>true</canPlaceOverWall>
		  <blueprintGraphicData>
			<texPath>Things/Building/Linked/Embrasure/Embrasure_Blueprint_Atlas</texPath>
		  </blueprintGraphicData>
		</building>
		<!-- not a future proof way to remove Meditation -->
		<comps Inherit="False">
		</comps>
	</ThingDef>

</Defs>