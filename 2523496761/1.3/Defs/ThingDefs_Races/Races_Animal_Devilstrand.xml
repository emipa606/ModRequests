    <!-- ///    Devilbex    /// -->
    <!-- ////////////////////// -->

    <ThingDef ParentName="AnimalThingBase">
        <defName>ATK_Devilbex</defName>
        <label>devilbex</label>
        <description>Created on a distant urbworld by a spacer corporation that recognised the vast potential of devilstrand as a material but found the growth period and requirements of the fungus to be financially unacceptable, the Devilbex is a transgenic animal created from the genestock of the hardy Ibex that, when lactating, produces devilstrand fibre rather than milk. This poses some problems for nurturing young, but allows for a method of producing the fabric that isn't so reliant on the soil fertility. A commercial success, the primary customers were those who lived on or were heading to the rimworlds and as such they are common across them to this day.</description>
        <statBases>
            <MoveSpeed>4.6</MoveSpeed>
            <MarketValue>350</MarketValue>
            <ComfyTemperatureMin>-30</ComfyTemperatureMin>
      		<FilthRate>16</FilthRate>
        </statBases>
        <tools>
            <li>
                <label>left hoof</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
            </li>
            <li>
                <label>right hoof</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities><li>Bite</li></capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.5</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities><li>Blunt</li></capacities>
                <power>10</power>
                <cooldownTime>2.6</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
            </li>
        </tools>
        <race>
            <body>QuadrupedAnimalWithHooves</body>
            <herdAnimal>true</herdAnimal>
            <baseBodySize>1.00</baseBodySize>
            <baseHungerRate>0.2</baseHungerRate>
            <baseHealthScale>0.85</baseHealthScale>
            <foodType>VegetarianRoughAnimal</foodType>
            <leatherDef>ATK_Leather_Devilhide</leatherDef>
            <wildness>0.55</wildness>
            <roamMtbDays>2</roamMtbDays>
            <gestationPeriodDays>5.661</gestationPeriodDays>
            <lifeExpectancy>15</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.1</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.2222</minAge>
                    <soundWounded>Pawn_Deer_Wounded</soundWounded>
                    <soundDeath>Pawn_Deer_Death</soundDeath>
                    <soundCall>Pawn_Deer_Call</soundCall>
                    <soundAngry>Pawn_Deer_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
            <useMeatFrom>Ibex</useMeatFrom>
            <wildBiomes>
                <BorealForest>0.2</BorealForest>
                <Tundra>0.8</Tundra>
                <ColdBog>0.2</ColdBog>
                <TemperateForest>0.2</TemperateForest>
                <TemperateSwamp>0.2</TemperateSwamp>
            </wildBiomes>
        </race>
        <tradeTags><li>AnimalCommon</li></tradeTags>
        <comps>
            <li Class="CompProperties_Milkable">
                <milkDef>DevilstrandCloth</milkDef>
                <milkIntervalDays>2</milkIntervalDays>
                <milkAmount>6</milkAmount>
                <milkFemaleOnly>true</milkFemaleOnly>
            </li>
        </comps>
    </ThingDef>

