<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods><li>A Dog Said... Animal Prosthetics</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Organs -->
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="InstallBionicAnimalStomach" or defName="InstallBionicAnimalKidney" or defName="InstallBionicAnimalLiver" or defName="InstallBionicAnimalLung" or defName="InstallBionicAnimalHeart" or defName="InstallAnimalBrainStimulator"]/recipeUsers</xpath>
					<value>
						<li>ATK_Devilbex</li>
						<li>ATK_Devilhare</li>
						<li>ATK_Devilyak</li>
					</value>
				</li>


				<!-- Spines -->
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="InstallSpineAnimalBionic" or defName="InstallSpineAnimalSimple"]/recipeUsers</xpath>
					<value>
						<li>ATK_Devilbex</li>
						<li>ATK_Devilhare</li>
						<li>ATK_Devilyak</li>
					</value>
				</li>


				<!-- Jaws -->
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="InstallJawAnimalBionic" or defName="InstallJawAnimalSimple"]/recipeUsers</xpath>
					<value>
						<li>ATK_Devilbex</li>
						<li>ATK_Devilhare</li>
						<li>ATK_Devilyak</li>
					</value>
				</li>


				<!-- Noses -->
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="InstallNoseAnimalSimple"]/recipeUsers</xpath>
					<value>
						<li>ATK_Devilbex</li>
						<li>ATK_Devilhare</li>
						<li>ATK_Devilyak</li>
					</value>
				</li>


				<!-- Eyes -->
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="InstallBionicEyeAnimal"]/recipeUsers</xpath>
					<value>
						<li>ATK_Devilbex</li>
						<li>ATK_Devilhare</li>
						<li>ATK_Devilyak</li>
					</value>
				</li>


				<!-- Ears -->
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="InstallEarAnimalSimple" or defName="InstallEarAnimalBionic"]/recipeUsers</xpath>
					<value>
						<li>ATK_Devilbex</li>
						<li>ATK_Devilhare</li>
						<li>ATK_Devilyak</li>
					</value>
				</li>


				<!-- Legs -->
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="InstallPegLegAnimal" or defName="InstallSimpleProstheticLegAnimal" or defName="InstallBionicLegAnimal"]/recipeUsers</xpath>
					<value>
						<li>ATK_Devilbex</li>
						<li>ATK_Devilhare</li>
						<li>ATK_Devilyak</li>
					</value>
				</li>


				<!-- Tails -->
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="InstallSimpleProstheticTailAnimal"]/recipeUsers</xpath>
					<value>
						<li>ATK_Devilbex</li>
						<li>ATK_Devilyak</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>