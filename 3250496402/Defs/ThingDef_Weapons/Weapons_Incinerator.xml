	  <AdvancedGunPartsKit>2</AdvancedGunPartsKit>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_ShootBeam</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>1.0</warmupTime>
        <range>24.9</range>
        <minRange>3.9</minRange>
        <beamFullWidthRange>6.9</beamFullWidthRange>
        <burstShotCount>5</burstShotCount>
        <beamWidth>6</beamWidth>
        <ticksBetweenBurstShots>22</ticksBetweenBurstShots>
        <beamDamageDef>PlasmaBeam</beamDamageDef>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <soundCastBeam>Shot_BurnLaser</soundCastBeam>
        <beamGroundFleckDef>Fleck_BeamMolten</beamGroundFleckDef>
        <beamFleckChancePerTick>0.32</beamFleckChancePerTick>
        <beamMaxDeviation>0</beamMaxDeviation>
        <beamCurvature>0</beamCurvature>
        <beamMoteDef>Mote_PlasmaBeamBase</beamMoteDef>
        <beamEndEffecterDef>PlasmaBeamz_End</beamEndEffecterDef>
        <beamChanceToStartFire>0.85</beamChanceToStartFire>
        <beamChanceToAttachFire>0.85</beamChanceToAttachFire>
        <beamFireSizeRange>0.55~0.85</beamFireSizeRange>
        <beamLineFleckDef>Fleck_PlasmaBeamSpark</beamLineFleckDef>
        <beamStartOffset>0</beamStartOffset>
        <beamLineFleckChanceCurve>
          <points>
            <li>(0, 0)</li>
          </points>
        </beamLineFleckChanceCurve>
      </li>
