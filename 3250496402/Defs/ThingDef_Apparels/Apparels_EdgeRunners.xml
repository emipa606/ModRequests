<Defs>

  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>FootWear_EdgeRunnerShoes</defName>
    <label>edgerunner shoes</label>
	<techLevel>Spacer</techLevel>
    <description>An advanced footwear designed for extreme agility-based footwork.</description>
    <graphicData>
      <texPath>Things/ArmorsAndClothes/Kral's_Protectives/Misc/MartinezShoes</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.0</drawSize>
    </graphicData>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
	<smeltable>false</smeltable>
    <statBases>
      <MaxHitPoints>2500</MaxHitPoints>
      <MarketValue>4500</MarketValue>
      <Mass>0.25</Mass>
	  <Beauty>2</Beauty>
      <Flammability>0</Flammability>
      <ArmorRating_Sharp>0.7</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Heat>0.9</ArmorRating_Heat>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
      <EquipDelay>8</EquipDelay>
    </statBases>
	<equippedStatOffsets>	
	  <MoveSpeed>1.5</MoveSpeed>
	  <SocialImpact>0.7</SocialImpact>
    </equippedStatOffsets>
    <allowedArchonexusCount>1</allowedArchonexusCount>
    <apparel>
	  <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Feet</li>
      </bodyPartGroups>
      <layers>
	    <li>Middle</li>
      </layers>
      <tags>
      </tags>
      <defaultOutfitTags>
	    <li>Worker</li>
        <li>Soldier</li>       
      </defaultOutfitTags>
    </apparel>
	<tradeTags>
      <li>KraltechApparelz</li>
    </tradeTags>
  </ThingDef>
  
