<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================================== Non-stuffable Face Protectors ====================================-->

  <ThingDef ParentName="ApparelBase">
    <defName>HeadGear_RaiderHoodedFaceProtector</defName>
    <label>raider hooded face protector</label>
	<techLevel>Spacer</techLevel>
    <description>A stylish hoody with a face protetor. Upon wearing it, the wearer gains toxic resistance and some degree of pain immunity, which it would make a perfect apparel for melee combatants.</description>
    <graphicData>
      <texPath>Things/ArmorsAndClothes/Kral's_Protectives/Hoods/HoodedFaceProtector1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	  <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
	  <researchPrerequisite>PunkGarments</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
	  <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>KraltechFabBench</li>
      </recipeUsers>
    </recipeMaker>
	<costList>
      <ComponentSpacer>1</ComponentSpacer>
      <Steel>30</Steel>
    </costList>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.25</Mass>
      <Flammability>0.5</Flammability>
      <ArmorRating_Sharp>1.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.2</ArmorRating_Blunt>
      <ArmorRating_Heat>0.9</ArmorRating_Heat>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
	<equippedStatOffsets> 
	  <PainShockThreshold>0.5</PainShockThreshold>
	  <ToxicEnvironmentResistance>0.15</ToxicEnvironmentResistance>
	  <HeatNullNaniteResistance>0.15</HeatNullNaniteResistance>
	  <HeatNullNaniteEnvironmentResistance>0.15</HeatNullNaniteEnvironmentResistance>
	  <ColdNullNaniteResistance>0.15</ColdNullNaniteResistance>
	  <ColdNullNaniteEnvironmentResistance>0.15</ColdNullNaniteEnvironmentResistance>
	  <RadiationResistance>0.15</RadiationResistance>
	  <RadiationEnvironmentResistance>0.15</RadiationEnvironmentResistance>
	  <AntiOrgToxinResistance>0.15</AntiOrgToxinResistance>
	  <AntiOrgToxinEnvironmentResistance>0.15</AntiOrgToxinEnvironmentResistance>
	  <RageVirusResistance>0.15</RageVirusResistance>
	  <RageVirusEnvironmentResistance>0.15</RageVirusEnvironmentResistance>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/ArmorsAndClothes/Kral's_Protectives/Hoods/HoodedFaceProtector1</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>SamuraiHoodie</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>       
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  <!-- ================================== Stuffable Face Protectors ====================================-->

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>HeadGear_HoodedFaceProtector</defName>
    <label>hooded face protector</label>
    <description>A hoody with a face protector, that provides moderate protection for the head.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/ArmorsAndClothes/Kral's_Protectives/Hoods/HoodedFaceProtector</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <tradeTags>
      <li>Clothing</li>
      <li>Armor</li>
    </tradeTags>
    <statBases>
      <WorkToMake>4200</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>1.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.5</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1.2</StuffEffectMultiplierInsulation_Heat>	  
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<equippedStatOffsets> 
	  <ToxicEnvironmentResistance>0.15</ToxicEnvironmentResistance>
	  <HeatNullNaniteResistance>0.15</HeatNullNaniteResistance>
	  <HeatNullNaniteEnvironmentResistance>0.15</HeatNullNaniteEnvironmentResistance>
	  <ColdNullNaniteResistance>0.15</ColdNullNaniteResistance>
	  <ColdNullNaniteEnvironmentResistance>0.15</ColdNullNaniteEnvironmentResistance>
	  <RadiationResistance>0.15</RadiationResistance>
	  <RadiationEnvironmentResistance>0.15</RadiationEnvironmentResistance>
	  <AntiOrgToxinResistance>0.15</AntiOrgToxinResistance>
	  <AntiOrgToxinEnvironmentResistance>0.15</AntiOrgToxinEnvironmentResistance>
	  <RageVirusResistance>0.15</RageVirusResistance>
	  <RageVirusEnvironmentResistance>0.15</RageVirusEnvironmentResistance>
    </equippedStatOffsets>
    <recipeMaker>
      <researchPrerequisite>PunkGarments</researchPrerequisite>
	  <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <displayPriority>200</displayPriority>
    </recipeMaker>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/ArmorsAndClothes/Kral's_Protectives/Hoods/HoodedFaceProtector</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>HoodieNFaceprotector</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>