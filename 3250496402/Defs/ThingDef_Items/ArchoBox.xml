    <thingClass>ThingWithComps</thingClass>
    <stackLimit>1</stackLimit>
    <useHitPoints>false</useHitPoints>
    <statBases>      
      <Mass>100</Mass>
      <Flammability>0</Flammability>
	  <Beauty>10</Beauty>
    </statBases>
  </ThingDef>
  
  <ThingDef ParentName="ArchoBox">
    <defName>ArchoBox</defName>
    <label>archo box</label>
    <description>A increadibly precious containment unit that came from the supreme apocriton. It contains treasures of unfathomable quality, and relics of great power. What are these treasures exactly? Well, only one way to find out!
	
PS: Try to open this thing in a spacious environment.</description>
    <statBases>
      <MarketValue>9999</MarketValue>
    </statBases>
    <graphicData>
      <texPath>Things/Resources/BossRewards/ArtifactBox</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>2, 2</drawSize>
    </graphicData>
	<size>(2,2)</size>
	<thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
	<killedLeavings>
	  <ArchoPyramid>1</ArchoPyramid>
	  <MechResourceAssembler>1</MechResourceAssembler>
	  <SupremeApocritonTrophy>1</SupremeApocritonTrophy>
	  <ArchoMechRangerBooster>1</ArchoMechRangerBooster>
	  <PsyRejuvenatorSerum>2</PsyRejuvenatorSerum>
	  <ArchoBoxMechHealer>1</ArchoBoxMechHealer>
	  <ArchoBoxMechResurrector>1</ArchoBoxMechResurrector>
    </killedLeavings>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Open ArchoBox</useLabel>
		<useDuration>650</useDuration>
      </li>
      <li Class="CompProperties_UseEffectDestroySelf">
        <delayTicks>0</delayTicks>
        <spawnKilledLeavings>true</spawnKilledLeavings>
      </li>
	  <li Class="CompProperties_Glower">
        <glowRadius>8</glowRadius>
        <glowColor>(115,200,23,0)</glowColor>
      </li>
    </comps>
	<tickerType>Normal</tickerType>
    <filthLeaving>Filth_MachineBits</filthLeaving>
  </ThingDef>
  
  
