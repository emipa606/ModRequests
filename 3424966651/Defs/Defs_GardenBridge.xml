<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<TerrainDef>
		<defName>SilkCircuit_GardenBridge</defName>
		<label>garden bridge</label>
		<description>A special bridge designed for cultivation over water. Unlike standard bridges, this one supports soil and crops, allowing farming where land is scarce. Slightly sturdier than a standard wooden bridge, but still vulnerable—too much damage, and your harvest sinks with it. Cannot be built over deep water.</description>
		<texturePath>Terrain/Surfaces/Soil</texturePath>
		<color>(255,255,255)</color>
		<uiIconPath>UI/ShallowGardenBridge_MenuIcon</uiIconPath>
		<layerable>true</layerable>
		<bridge>true</bridge>
		<affordances>
			<li>Light</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<designationCategory>Structure</designationCategory>
		<fertility>1.0</fertility>
		<constructEffect>ConstructWood</constructEffect>
		<terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
		<edgeType>Hard</edgeType>
		<renderPrecedence>400</renderPrecedence>
		<autoRebuildable>true</autoRebuildable>
		<statBases>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>0.2</Flammability>
			<BeautyOutdoors>0</BeautyOutdoors>
			<Cleanliness>-1</Cleanliness>
		</statBases>
		<costList>
			<WoodLog>12</WoodLog>
			<Hay>12</Hay>
		</costList>
		<tags>
			<li>Floor</li>
		</tags>
		<destroyOnBombDamageThreshold>125</destroyOnBombDamageThreshold>
		<destroyBuildingsOnDestroyed>true</destroyBuildingsOnDestroyed>
		<destroyEffect>Bridge_Collapse</destroyEffect>
		<destroyEffectWater>Bridge_CollapseWater</destroyEffectWater>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		<takeFootprints>True</takeFootprints>
		<tools>
			<li>
				<label>dirt</label>
				<capacities>
					<li>KickMaterialInEyes</li>
				</capacities>
				<hediff>DirtInEyes</hediff>
				<cooldownTime>1.5</cooldownTime>
			</li>
		</tools>
	</TerrainDef>
	
</Defs>