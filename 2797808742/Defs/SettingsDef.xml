<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<XmlExtensions.SettingsMenuDef>
		<modId>lupinewitch.patches.hotspringretextured</modId>
		<label>Choose your Hot Spring Retexture!</label>
		<defName>lupinewitch_hotspringretextured</defName>
		<settings>
			<li Class="XmlExtensions.Setting.Text">
				<text>Choose your Hot Spring Retexture</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
			</li>
			<li Class="XmlExtensions.Setting.GapLine"/>
			<li Class="XmlExtensions.Setting.Text">
				<text>All settings require restart!</text>
				<anchor>Middle</anchor>
			</li>

			<!--All mood settings will be injected here-->
      <li Class="XmlExtensions.Setting.RadioButtons">
        <key>choosePatchKey</key>
        <defaultValue>1</defaultValue>
        <buttons>
        <li>
            <label>Default Hot Spring Experience</label>
            <value>1</value>
        </li>
        <li>
            <label>Classic Retextures (All mods that use the same Hotspring_Rtx" texture name end up here)</label>
            <value>2</value>
        </li>
        <li>
            <label>ESCP - Hot Spring Retexture by Ranger Rick (or its Morrowind version (if it's installed))</label>
            <value>3</value>
        </li>
        <li>
            <label>Another Another Standalone Hot Spring Retexture - Re-Texture Retexture by Wolf478</label>
            <value>4</value>
        </li>
        <li>
            <label>Dumbspring by Bunkier</label>
            <value>5</value>
        </li>
      </buttons>
    </li>

			<li Class="XmlExtensions.Setting.ResetSettings"/>
		</settings>

		<!--DefDatabase operations will be injected here-->
		<postCloseActions/>
	</XmlExtensions.SettingsMenuDef>

</Defs>
