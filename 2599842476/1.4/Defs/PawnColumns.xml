<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <PawnColumnDef>
    <defName>CorpseTab_Refrigerated</defName>
    <workerClass>CorpseTab.PawnColumnWorker_Refrigerated</workerClass>
    <sortable>true</sortable>
    <headerIcon>Icon_Refrigerated</headerIcon>
  </PawnColumnDef>

  <PawnColumnDef>
    <defName>CorpseTab_PostmortemTime</defName>
    <workerClass>CorpseTab.PawnColumnWorker_PostmortemTime</workerClass>
    <headerIcon>Icon_PostmortemTime</headerIcon>
    <headerTip>It shows how long the body has been dead.</headerTip>
    <width>90</width> <!-- default is 45 -->
    <sortable>true</sortable>
  </PawnColumnDef>

  <PawnColumnDef>
    <defName>CorpseTab_UntilRot</defName>
    <workerClass>CorpseTab.PawnColumnWorker_UntilRot</workerClass>
    <headerIcon>Icon_UntilRot</headerIcon>
    <headerTip>It shows how long it will take for the corpse to decompose.</headerTip>
    <width>90</width> <!-- default is 45 -->
    <sortable>true</sortable>
  </PawnColumnDef>

  <PawnColumnDef>
    <defName>CorpseTab_Permission</defName>
    <workerClass>CorpseTab.PawnColumnWorker_Permission</workerClass>
    <sortable>true</sortable>
    <headerIcon>Icon_Permission</headerIcon>
    <headerTip>When turned off, colonists will be prohibited from touching the corpse.</headerTip>
    <paintable>true</paintable>
  </PawnColumnDef>

  <!-- for AllowTools -->

  <PawnColumnDef>
    <defName>CorpseTab_HaulUrgently</defName>
    <workerClass>CorpseTab.PawnColumnWorker_HaulUrgently</workerClass>
    <sortable>true</sortable>
    <headerIcon>Icon_HaulUrgently</headerIcon>
    <headerTip>When turned on, the settler will haul urgently the corpse.</headerTip>
    <paintable>true</paintable>
  </PawnColumnDef>

</Defs>
