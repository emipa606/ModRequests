<?xml version="1.0" encoding="UTF-8"?>

<Defs>
  
  <ThingDef ParentName="BuildingBase">
    <defName>WDR_Runelamp</defName>
    <label>runic lamp</label>
    <description>A runic standing lamp that uses the arcane properties of runewood to light an area. People need light to move and work at full speed.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <pathCost>14</pathCost>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <designationCategory>Furniture</designationCategory>
    <rotatable>false</rotatable>
    <uiIconOffset>(0, 0.03)</uiIconOffset>
    <costList>
      <WoodLog>15</WoodLog>
      <WDD_RuneWood>1</WDD_RuneWood>
    </costList>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <graphicData>
      <texPath>Buildings/RuneLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(86,133,112,0)</glowColor>
        <colorPickerEnabled>false</colorPickerEnabled>
        <darklightToggle>true</darklightToggle>
      </li>
    </comps>
    <statBases>
      <Mass>4</Mass>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>300</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
  </ThingDef>

</Defs>