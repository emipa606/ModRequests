<?xml version="1.0" encoding="UTF-8"?>

<Defs>
   <HediffDef Name="addedPartRunic" Abstract="True">
      <hediffClass>Hediff_AddedPart</hediffClass>
      <isBad>false</isBad>
      <defaultLabelColor>(111, 153, 60)</defaultLabelColor>
      <addedPartProps>
         <betterThanNatural>false</betterThanNatural>
      </addedPartProps>
   </HediffDef>

   <!-- Added body parts -->
   
   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicEye</defName>
      <label>runic eye</label>
	  <description>An installed runic eye.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicEye</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicEye</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>0.65</partEfficiency>
      </addedPartProps>
   </HediffDef>

  <HediffDef ParentName="addedPartRunic">
    <defName>WDD_RunicEar</defName>
    <label>runic ear</label>
    <labelNoun>a runic ear</labelNoun>
    <description>An installed runic ear.</description>
    <descriptionHyperlinks>
      <ThingDef>WDD_RunicEar</ThingDef>
    </descriptionHyperlinks>
    <spawnThingOnRemoved>WDD_RunicEar</spawnThingOnRemoved>
    <addedPartProps>
      <partEfficiency>0.7</partEfficiency>
    </addedPartProps>
  </HediffDef>
   
   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicHand</defName>
      <label>runic hand</label>
	  <description>An installed runic hand.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicHand</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicHand</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>0.8</partEfficiency>
      </addedPartProps>
      <comps>
         <li Class="HediffCompProperties_VerbGiver">
            <tools>
               <li>
                  <label>runic fist</label>
                  <capacities>
                     <li>Blunt</li>
                  </capacities>
                  <power>9</power>
                  <cooldownTime>1.65</cooldownTime>
               </li>
            </tools>
         </li>
      </comps>
   </HediffDef>
   
   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicFoot</defName>
      <label>runic foot</label>
	  <description>An installed runic foot.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicFoot</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicFoot</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>0.95</partEfficiency>
      </addedPartProps>
   </HediffDef>
   
   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicArm</defName>
      <label>runic arm</label>
	  <description>An installed runic arm.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicArm</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicArm</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>0.7</partEfficiency>
      </addedPartProps>
	  <comps>
		<li Class="HediffCompProperties_VerbGiver">
			<tools>
				<li>
					<label>runic fist</label>
					<capacities>
					<li>Blunt</li>
					</capacities>
					<power>8.2</power> <!-- Same as natural fist -->
					<cooldownTime>2</cooldownTime>
				</li>
			</tools>
		</li>
      </comps>
   </HediffDef>
   
   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicLeg</defName>
      <label>runic leg</label>
	  <description>An installed runic leg.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicLeg</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicLeg</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>0.8</partEfficiency>
      </addedPartProps>
   </HediffDef>

  <HediffDef ParentName="addedPartRunic">
    <defName>WDD_RunicStabilizer</defName>
    <label>runic brain stabilizer</label>
    <description>An installed runic brain stabilizer.</description>
    <descriptionHyperlinks>
      <ThingDef>WDD_RunicStabilizer</ThingDef>
    </descriptionHyperlinks>
    <spawnThingOnRemoved>WDD_RunicStabilizer</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.0</partEfficiency>
    </addedPartProps>
    <stages>
      <li>
        <partIgnoreMissingHP>true</partIgnoreMissingHP>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.6</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
   
   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicNose</defName>
      <label>runic nose</label>
	  <description>An installed runic nose.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicNose</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicNose</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>1</partEfficiency>
      </addedPartProps>
   </HediffDef>
   
   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicJaw</defName>
      <label>runic jaw</label>
	  <description>An installed runic jaw.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicJaw</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicJaw</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>0.7</partEfficiency>
      </addedPartProps>
   </HediffDef>

   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicPelvis</defName>
      <label>runic pelvis</label>
	  <description>An installed runic pelvis.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicPelvis</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicPelvis</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>0.9</partEfficiency>
      </addedPartProps>
   </HediffDef>
   
   <HediffDef ParentName="addedPartRunic">
      <defName>WDD_RunicClavicle</defName>
      <label>runic clavicle</label>
	  <description>An installed runic clavicle.</description>
      <descriptionHyperlinks><ThingDef>WDD_RunicClavicle</ThingDef></descriptionHyperlinks>
      <spawnThingOnRemoved>WDD_RunicClavicle</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>0.9</partEfficiency>
      </addedPartProps>
   </HediffDef>
   
</Defs>