<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Pure stuffs: Fabric, leather, etc  ====================-->
	<ThingDef ParentName="ResourceBase">
		<defName>WDD_RuneWood</defName>
		<label>runewood</label>
		<description>A wood produced by dryads that has an innate magical property. Runewood can be used to harness the power of a Guaranlen queen to create special bionics.</description>
		<graphicData>
			<texPath>Resources/WDD_RuneWood</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>20</MaxHitPoints>
			<MarketValue>70</MarketValue>
			<Mass>0.3</Mass>
			<Flammability>1</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
		</statBases>
		<healthAffectsPrice>false</healthAffectsPrice>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
		<allowedArchonexusCount>80</allowedArchonexusCount>
	</ThingDef>
  
  <ThingDef ParentName="ResourceBase">
    <defName>WDD_RunicEmbryo</defName>
    <label>runic embryo</label>
    <description>A special, fertile version of Runewood that is capable of growing and forming a symbiotic relationship with a biological host.</description>
    <graphicData>
      <texPath>Resources/WDD_RunicEmbryo</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>30</MaxHitPoints>
      <MarketValue>90</MarketValue>
      <Mass>0.4</Mass>
      <Flammability>1</Flammability>
      <DeteriorationRate>4</DeteriorationRate>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>2</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <tickerType>Rare</tickerType>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <allowedArchonexusCount>20</allowedArchonexusCount>
  </ThingDef>
</Defs>
