<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Wolfhaul Pitch Addon</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="WDD_RuneWood"]/thingCategories</xpath>
          <value>
            <thingCategories>
              <li>WDT_WoodProducts</li>
            </thingCategories>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="WDD_RunicEmbryo"]/thingCategories</xpath>
          <value>
            <thingCategories>
              <li>WDT_WoodProducts</li>
            </thingCategories>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>