<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Wolf's EPOE Retexture</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- ========== Recipes ================= -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[@Name="WDD_Runic"]/graphicData</xpath>
          <value>
            <graphicData>
              <texPath>Parts/Texture_WET_Simple</texPath>
              <graphicClass>Graphic_Single</graphicClass>
              <drawSize>0.80</drawSize>
            </graphicData>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[@Name="WDD_Dryadic"]/graphicData</xpath>
          <value>
            <graphicData>
              <texPath>Parts/Texture_WET_Basic</texPath>
              <graphicClass>Graphic_Single</graphicClass>
              <drawSize>0.80</drawSize>
            </graphicData>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[@Name="WDD_Ascendant"]/graphicData</xpath>
          <value>
            <graphicData>
              <texPath>Parts/Texture_WET_Advanced</texPath>
              <graphicClass>Graphic_Single</graphicClass>
              <drawSize>0.80</drawSize>
            </graphicData>
          </value>
        </li>
      </operations>
    </match>
    <nomatch Class="PatchOperationFindMod">
      <mods>
        <li>Expanded Prosthetics and Organ Engineering</li>
      </mods>
      <match Class="PatchOperationSequence">
        <operations>
          <!-- ========== Recipes ================= -->
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[@Name="WDD_Runic"]/graphicData</xpath>
            <value>
              <graphicData>
                <texPath>Parts/Texture_EPOE_Simple</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>0.80</drawSize>
              </graphicData>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[@Name="WDD_Dryadic"]/graphicData</xpath>
            <value>
              <graphicData>
                <texPath>Parts/Texture_EPOE_Basic</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>0.80</drawSize>
              </graphicData>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[@Name="WDD_Ascendant"]/graphicData</xpath>
            <value>
              <graphicData>
                <texPath>Parts/Texture_EPOE_Advanced</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>0.80</drawSize>
              </graphicData>
            </value>
          </li>
        </operations>
      </match>
    </nomatch>
  </Operation>
</Patch>