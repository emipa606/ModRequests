        <xpath>Defs/ThingDef[@Name = "ApparelBase"]</xpath>
        <value>
            <inspectorTabs>
                <li>ITab_Art</li>
            </inspectorTabs>
        </value>
    </Operation>
	
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[@Name = "ApparelBase"]/comps</xpath>
        <value>
            <li Class="CompProperties_Art">
                <nameMaker>NamerArtClothing</nameMaker>
                <descriptionMaker>ArtDescription_Clothing</descriptionMaker>
                <minQualityForArtistic>Excellent</minQualityForArtistic>
            </li>
        </value>
    </Operation>
	
</Patch>