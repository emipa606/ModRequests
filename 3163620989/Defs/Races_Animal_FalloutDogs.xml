<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="AnimalThingBase">
		<defName>Nightstalker</defName>
		<label>nightstalker</label>
		<description>A dangerous hunter from wastelands. But some of them could be tamed.</description>
		<statBases>
			<MoveSpeed>6.5</MoveSpeed>
			<MarketValue>300</MarketValue>
			<ComfyTemperatureMin>-15</ComfyTemperatureMin>
			<FilthRate>2</FilthRate>
			<ToxicEnvironmentResistance>1</ToxicEnvironmentResistance>
		</statBases>
		<tools>
			<li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>11.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>15</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
        <chanceFactor>0.5</chanceFactor>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>11.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
        <chanceFactor>0.5</chanceFactor>
      </li>
      <li>
        <label>venom-fangs</label>
        <capacities>
          <li>ToxicBite</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
		</tools>
		<race>
			<body>QuadrupedAnimalWithPawsAndTail</body>
			<petness>0.9</petness>
			<baseBodySize>0.85</baseBodySize>
			<baseHungerRate>0.25</baseHungerRate>
			<baseHealthScale>0.99</baseHealthScale>
			<foodType>CarnivoreAnimal</foodType>
			<leatherDef>Leather_Dog</leatherDef>
			<nameOnTameChance>1</nameOnTameChance>
			<useMeatFrom>Wolf_Timber</useMeatFrom>
			<packAnimal>true</packAnimal>
			<trainability>Advanced</trainability>
			<wildness>0.85</wildness>
			<nuzzleMtbHours>12</nuzzleMtbHours>
			<gestationPeriodDays>10</gestationPeriodDays>
			<litterSizeCurve>
				<points>
					<li>(0.5, 0)</li>
					<li>(1, 1)</li>
					<li>(2, 1.7)</li>
					<li>(2.5, 0.7)</li>
					<li>(3, 0)</li>
				</points>
			</litterSizeCurve>
			<lifeExpectancy>10</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.2</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.5</minAge>
					<soundWounded>Pawn_Warg_Wounded</soundWounded>
					<soundDeath>Pawn_Warg_Death</soundDeath>
					<soundCall>Pawn_Warg_Call</soundCall>
					<soundAngry>Pawn_Warg_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
		<tradeTags>
			<li>AnimalUncommon</li>
			<li>AnimalFighter</li>
			<li>AnimalPet</li>
		</tradeTags>
	</ThingDef>

