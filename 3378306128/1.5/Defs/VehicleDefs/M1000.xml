<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="RT_BaseVehicleBuild"><!-- 建築型態的載具，基本上與BuildingDef相同-->
		<defName>RT_M1000_HET_Blueprint</defName>
		<label>M1000 HET</label>
		<description>An unpowered semi-trailor designed for transport, deploy, and evacuate other vehicles.</description>
		<graphicData>
			<texPath>Vehicles/M1000/vehicle</texPath>
			<drawSize>(14,14)</drawSize>
		</graphicData>
		<size>(4,11)</size>
		<statBases> 		
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>80000</WorkToBuild>
			<Flammability>0.05</Flammability>
		</statBases>
		<researchPrerequisites>
			<li>Machining</li>
		</researchPrerequisites>		
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>	
		<costList>
			<ComponentTransmission>1</ComponentTransmission>
			<ComponentWheelTire>40</ComponentWheelTire>
			<ComponentIndustrial>8</ComponentIndustrial>
			<Steel>400</Steel>
		</costList>	
		<thingToSpawn>RT_M1000_HET</thingToSpawn>	<!-- 建造後生成的載具Kind,這是與建築唯一不一樣的-->
	</Vehicles.VehicleBuildDef>

	<Vehicles.VehicleDef ParentName="RT_BaseVehicle">
		<defName>RT_M1000_HET</defName>
		<label>M1000 HET</label>
		<description>An unpowered semi-trailor designed for transport, deploy, and evacuate other vehicles.</description>
		<buildDef>RT_M1000_HET_Blueprint</buildDef>
		<thingClass>Motorization.VehiclePawn_Trailer</thingClass>		
		<graphicData>
			<texPath>Vehicles/M1000/vehicle</texPath>
			<drawSize>(14,14)</drawSize>
		</graphicData>		
		<size>(4,11)</size>
		<fillPercent>1</fillPercent>	
		<vehicleCategory>Transport</vehicleCategory>
		<statBases>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
			<Flammability>0</Flammability>
			<MarketValue>3000</MarketValue>
		</statBases>		
		<vehicleStats>
			<Mass>2000</Mass>
			<MoveSpeed>0.5</MoveSpeed>
			<CargoCapacity>1000</CargoCapacity>
			<RepairRate>0.5</RepairRate>
		</vehicleStats>
		<race>
			<baseBodySize>3.5</baseBodySize>
		</race>	
		<properties>
			<customRoadCosts AssignDefaults = "0.3"/>
			<worldSpeedMultiplier>1.2</worldSpeedMultiplier>
			<winterSpeedMultiplier>1.0</winterSpeedMultiplier>
			<offRoadMultiplier>1.0</offRoadMultiplier>
			<customHillinessCosts>
				<SmallHills>0.4</SmallHills>
				<LargeHills>1.2</LargeHills>
				<Mountainous>2</Mountainous>
			</customHillinessCosts>
			<vehicleJobLimitations>
				<li>(RepairVehicle, 4)</li>
			</vehicleJobLimitations>		
		</properties>	
		<components>
			<!-- Internal mobile Part 內部驅動部件-->
			<li><!-- LeftFrontSuspension 40-->
				<key>LeftSuspension</key>
				<label>leftsuspensions</label>
				<health>200</health>
				<depth>Internal</depth>			
				<hitbox>
					<side>Left</side>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- RightFrontSuspension 40-->
				<key>RightSuspension</key>
				<label>right suspensions</label>
				<health>200</health>
				<depth>Internal</depth>
				<hitbox>
					<side>Right</side>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
		<!-- External mobile Part 外部驅動部件-->
			<li><!-- LeftRearWheel	30-->
				<key>LeftRWheel</key>
				<label>left Wheels</label>
				<health>300</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>	
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Left</side>
				</hitbox>
				<hitWeight>2</hitWeight>
			</li>
			<li><!-- RightRearWheel 30-->
				<key>RightWheel</key>
				<label>right Wheels</label>
				<health>300</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Right</side>
				</hitbox>
				<hitWeight>2</hitWeight>
			</li>
		<!-- External Shell Part 外殼部件-->
			<li><!-- Roof 40-->
				<key>CargoHold</key>
				<label>cargo hold</label>
				<health>90</health>
				<depth>External</depth>
				<hitbox><side>Body</side></hitbox>
			</li>
			<li><!-- FrontBumper 30-->
				<key>FrontBumper</key>
				<label>front bumper</label>
				<health>100</health>
				<depth>External</depth>
				<hitbox><side>Front</side></hitbox>
				<hitWeight>5</hitWeight>
			</li>
			<li><!-- RearBumper 25-->
				<key>RearBumper</key>
				<label>rear bumper</label>
				<health>100</health>
				<depth>External</depth>
				<hitbox><side>Back</side></hitbox>
				<hitWeight>5</hitWeight>
			</li>
		</components>
		<comps>
			<li Class="Motorization.CompProperties_TrailerMount">
				<flipWhenTrailer>false</flipWhenTrailer>
				<supportedType>
					<li>Tractor_M1070</li>
					<li>Trailer_M1000</li>
				</supportedType>
				<rotationPivot>
					<li>(0.0,0,6)</li>
					<li>(5.8,0,0.7)</li>
					<li>(0.0,0,-5.2)</li>
					<li>(-5.8,0,0.7)</li>
					<!-- NE-->
					<li>(4.3,0,4.3)</li>
					<li>(3.7,0,-3.7)</li>
					<li>(-3.7,0,-3.7)</li>
					<li>(-4.3,0,4.3)</li>
				</rotationPivot>
			</li>
			<li Class="Motorization.CompProperties_VehicleCargo">
				<renderOpposite>true</renderOpposite>
				<lengthLimit>7</lengthLimit>
				<drawData>
					<dataNorth>(0,0.1,-1.75)</dataNorth>
					<dataEast>(-2,0.1,0.5)</dataEast>
					<dataSouth>(0,0.05,1.9)</dataSouth>
					<dataWest>(2,0.1,0.5)</dataWest>
					<dataNorthEast>(-1.5,0.1,-1.5)</dataNorthEast>
					<dataSouthEast>(-1.3,0.1,1.3)</dataSouthEast>
					<dataSouthWest>(1.3,0.1,1.3)</dataSouthWest>
					<dataNorthWest>(1.5,0.1,-1.5)</dataNorthWest>
				</drawData>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>