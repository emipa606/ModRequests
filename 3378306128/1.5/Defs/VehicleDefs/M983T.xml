<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="RT_BaseVehicleBuild"><!-- 建築型態的載具，基本上與BuildingDef相同-->
		<defName>RT_M983T_Blueprint</defName>
		<label>Mid Semi-Trailor</label>
		<description>An unpowered medium semi-trailor designed for both cargo and vehicle transport.</description>
		<graphicData>
			<texPath>Vehicles/M983T/vehicle</texPath>
			<drawSize>10</drawSize>
		</graphicData>
		<statBases> 		
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>60000</WorkToBuild>
			<Flammability>0.05</Flammability>
		</statBases>
		<size>(3,7)</size>
		<researchPrerequisites>
			<li>Machining</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>	
		<costList>
			<ComponentTransmission>1</ComponentTransmission>
			<ComponentWheelTire>4</ComponentWheelTire>
			<ComponentIndustrial>4</ComponentIndustrial>
			<Steel>300</Steel>
		</costList>	
		<thingToSpawn>RT_M983T</thingToSpawn>	<!-- 建造後生成的載具Kind,這是與建築唯一不一樣的-->
	</Vehicles.VehicleBuildDef>

	<Vehicles.VehicleDef ParentName="RT_BaseVehicle">
		<defName>RT_M983T</defName>
		<label>Mid Semi-Trailor</label>
		<description>An unpowered medium semi-trailor designed for both cargo and vehicle transport.</description>
		<buildDef>RT_M983T_Blueprint</buildDef>
		<thingClass>Motorization.VehiclePawn_Trailer</thingClass>
		<graphicData>
			<texPath>Vehicles/M983T/vehicle</texPath>
			<drawSize>10</drawSize>
		</graphicData>		
		<size>(3,7)</size>
		<fillPercent>1</fillPercent>	
		<vehicleCategory>Transport</vehicleCategory>
		<statBases>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
			<Flammability>0</Flammability>
			<MarketValue>1000</MarketValue>
		</statBases>		
		<vehicleStats>
			<Mass>2000</Mass>
			<MoveSpeed>0.5</MoveSpeed>
			<CargoCapacity>500</CargoCapacity>
			<RepairRate>0.5</RepairRate>
		</vehicleStats>
		<race>
			<baseBodySize>2.5</baseBodySize>
		</race>	
		<properties>
			<customRoadCosts AssignDefaults = "0.3"/>
			<worldSpeedMultiplier>1.2</worldSpeedMultiplier>
			<winterSpeedMultiplier>1.0</winterSpeedMultiplier>
			<offRoadMultiplier>1.0</offRoadMultiplier>
			<customHillinessCosts>
				<SmallHills>0.4</SmallHills>
				<LargeHills>1.2</LargeHills>
				<Mountainous>2</Mountainous>
			</customHillinessCosts>
			<vehicleJobLimitations>
				<li>(RepairVehicle, 4)</li>
			</vehicleJobLimitations>
		</properties>	
		<components>
			<li><!-- LeftRearSuspension 40-->
				<key>LeftRearSuspension</key>
				<label>left rear suspensions</label>
				<health>120</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(-1, -1)</li>
						<li>(-1, -2)</li>
						<li>(-1, -3)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- RightRearSuspension 40-->
				<key>RightRearSuspension</key>
				<label>right rear suspension</label>
				<health>120</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(1, -1)</li>
						<li>(1, -2)</li>
						<li>(1, -3)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
		<!-- External mobile Part 外部驅動部件-->
			<li><!-- LeftRearWheel	30-->
				<key>LeftRearWheel</key>
				<label>left rear wheels</label>
				<health>120</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>	
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(-1, -1)</li>
						<li>(-1, -2)</li>
						<li>(-1, -3)</li>
					</cells>
				</hitbox>
				<hitWeight>2</hitWeight>
			</li>
			<li><!-- RightRearWheel 30-->
				<key>RightRearWheel</key>
				<label>right rear Wheels</label>
				<health>120</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(1, -1)</li>
						<li>(1, -2)</li>
						<li>(1, -3)</li>
					</cells>
				</hitbox>
				<hitWeight>2</hitWeight>
			</li>
			<li><!-- FrontBumper 30-->
				<key>FrontBumper</key>
				<label>front bumper</label>
				<health>100</health>
				<depth>External</depth>
				<hitbox><side>Front</side></hitbox>
				<hitWeight>5</hitWeight>
			</li>
			<li><!-- RearBumper 25-->
				<key>RearBumper</key>
				<label>rear bumper</label>
				<health>30</health>
				<depth>External</depth>
				<hitbox><side>Back</side></hitbox>
				<hitWeight>5</hitWeight>
			</li>
		</components>
		<comps>
			<li Class="Motorization.CompProperties_TrailerMount">
				<flipWhenTrailer>false</flipWhenTrailer>
				<supportedType>
					<li>Tractor_M983</li>
					<li>Trailer_M1070</li>
				</supportedType>
				<rotationPivot>
					<li>(0.0,0,3)</li>
					<li>(3.9,0,0.225)</li>
					<li>(0.0,0,-3.2)</li>
					<li>(-3.9,0,0.225)</li>
					<!-- NE-->
					<li>(2.1,0,2.1)</li>
					<li>(2.25,0,-2.25)</li>
					<li>(-2.25,0,-2.25)</li>
					<li>(-2.1,0,2.1)</li>
				</rotationPivot>
			</li>
			<li Class="Motorization.CompProperties_VehicleCargo">
				<renderOpposite>true</renderOpposite>
				<drawData>
					<dataNorth>(0,0.1,-0.75)</dataNorth>
					<dataEast>(-0.9,0.1,0.5)</dataEast>
					<dataSouth>(0,0.05,1.1)</dataSouth>
					<dataWest>(0.9,0.1,0.5)</dataWest>
					<dataNorthEast>(-0.5,0.1,-0.5)</dataNorthEast>
					<dataSouthEast>(-0.75,0.1,0.75)</dataSouthEast>
					<dataSouthWest>(0.75,0.1,0.75)</dataSouthWest>
					<dataNorthWest>(0.5,0.1,-0.5)</dataNorthWest>
				</drawData>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>