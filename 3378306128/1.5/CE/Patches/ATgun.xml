<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Turret -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[defName="TestAT_Turret"]/projectile</xpath>
		<value>
			<projectile>Bullet_57x441mmR_AP</projectile>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[defName="TestAT_Turret"]/chargePerAmmoCount</xpath>
		<value>
			<chargePerAmmoCount>1</chargePerAmmoCount>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[defName="TestAT_Turret"]/genericAmmo</xpath>
		<value>
			<genericAmmo>false</genericAmmo>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/Vehicles.VehicleTurretDef[defName="TestAT_Turret"]/projectileShifting</xpath>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[defName="TestAT_Turret"]/maxRange</xpath>
		<value>
			<maxRange>75</maxRange>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/Vehicles.VehicleTurretDef[defName="TestAT_Turret"]</xpath>
		<value>
			<li Class="Vehicles.CETurretDataDefModExtension">
				<ammoSet>AmmoSet_57x441mmR</ammoSet>
				<shotHeight>2.0</shotHeight>
				<sway>0.82</sway>
				<spread>0.01</spread>
			</li>
		</value>
	</Operation>

	<!-- Vehicle -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="RT_TestAT"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>10</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="RT_TestAT"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>4</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="RT_TestAT"]/vehicleStats/CargoCapacity</xpath>
		<value>
			<CargoCapacity>150</CargoCapacity>
		</value>
	</Operation>

	<!--Front Armor-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="RT_TestAT"]/components/li[key="GunShield"]/health</xpath>
		<value>
			<health>400</health>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleDef[defName="RT_TestAT"]/components/li[key="GunShield"]/armor</xpath>
		<value>
			<armor>
				<ArmorRating_Blunt>80</ArmorRating_Blunt>
				<ArmorRating_Sharp>10</ArmorRating_Sharp>
			</armor>
		</value>
	</Operation>

</Patch>
