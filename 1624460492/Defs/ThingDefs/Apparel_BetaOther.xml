<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="BOApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <Beauty>5</Beauty>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
	
  <ThingDef Name="OBetaApparelBase" ParentName="BOApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <apparel>
      <gender>Female</gender>
      <tags>
        <li>RoyalCombatGear</li>
        <li>Psychic</li>
      </tags>
    </apparel>
    <equippedStatOffsets>
      <PsychicSensitivity>0.3</PsychicSensitivity>
      <PsychicEntropyRecoveryRate>3.5</PsychicEntropyRecoveryRate>
      <PsychicEntropyMax>3</PsychicEntropyMax>
    </equippedStatOffsets>
  </ThingDef>
      
	<!-- ================================ 23uniform ====================================== -->
		
  <ThingDef ParentName="OBetaApparelBase">
    <defName>22Uniform</defName>
    <label>22Uniform</label>
    <description>22 Uniform.</description>
    <graphicData>
      <texPath>Things/BetaApparel/22/22Uniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<tradeability>Sellable</tradeability>
	<costList>
		<Cloth>80</Cloth>
    	<Steel>80</Steel>
	</costList>
    <thingCategories>
      <li>BiLi_Apparel</li>
    </thingCategories>
    <statBases>
	  <MaxHitPoints>550</MaxHitPoints>
      <WorkToMake>24000</WorkToMake>
      <Mass>1.5</Mass>
      <Flammability>0.3</Flammability>
      <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.22</ArmorRating_Blunt>
      <ArmorRating_Heat>0.22</ArmorRating_Heat>
      <Insulation_Cold>28</Insulation_Cold>
	  <Insulation_Heat>18</Insulation_Heat>
	  <Beauty>8</Beauty>
	  <MarketValue>0.5</MarketValue>
    </statBases>
    <equippedStatOffsets>
	  <MoveSpeed>0.5</MoveSpeed>
	  <ShootingAccuracyPawn>0.60</ShootingAccuracyPawn>
	  <AimingDelayFactor>-0.25</AimingDelayFactor>
	  <SocialImpact>0.3</SocialImpact>
	  <GeneralLaborSpeed>0.3</GeneralLaborSpeed>
	  <ResearchSpeed>0.3</ResearchSpeed>
      <ButcheryMechanoidSpeed>0.2</ButcheryMechanoidSpeed>
	  <PainShockThreshold>0.15</PainShockThreshold>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
		<li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/BetaApparel/22/22Uniform</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
        <li>Player</li>
      </defaultOutfitTags>
	  <gender>Female</gender>
      <tags>
        <li>Royal</li>
        <li>RoyalTier2</li>
        <li>RoyalTier5</li>
        <li>RoyalTier6</li>
        <li>RoyalTier7</li>
      </tags>	  
    </apparel>
	<generateCommonality>0</generateCommonality>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(74,144,244,255)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>  		

