<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>GAB_BaijuAsIngredient</defName>
		<label>drank baijiu based cocktail</label>
		<makesSickThought>false</makesSickThought>
		<description>This colonist drank a cocktail that had baijiu as one of its ingredients. Increases rest rate by 10%.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>GAB_BaijuAsIngredient</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>   
				<statOffsets>
					<RestRateMultiplier>0.10</RestRateMultiplier>
				</statOffsets>		
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>GAB_RaksiAsIngredient</defName>
		<label>drank raksi based cocktail</label>
		<makesSickThought>false</makesSickThought>
		<description>This colonist drank a cocktail that had raksi as one of its ingredients. Increases minimum comfortable temperature by 10%.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>GAB_RaksiAsIngredient</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>   
				<statOffsets>
					<ComfyTemperatureMin>-10</ComfyTemperatureMin>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>GAB_KvassAsIngredient</defName>
		<label>drank kvass based cocktail</label>
		<makesSickThought>false</makesSickThought>
		<description>This colonist drank a cocktail that had kvass as one of its ingredients. Increases social impact by 5%.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>GAB_KvassAsIngredient</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<SocialImpact>0.05</SocialImpact>
				</statOffsets>	
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>GAB_ConsumedVinegar</defName>
		<label>consumed vinegar (from meal)</label>
		<makesSickThought>false</makesSickThought>		
		<description>Vinegar is a thin, mildly acidic liquid produced by fermentation. It is known to suppress appetite, but may cause toothaches due to its acidity.</description>
		<descriptionHyperlinks>
      		<HediffDef>GAB_Toothache</HediffDef>
    	</descriptionHyperlinks>
		<hediffClass>HediffWithComps</hediffClass>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>GAB_ConsumedVinegar</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>
				<hungerRateFactorOffset>-0.05</hungerRateFactorOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>GAB_Toothache</hediff>
						<mtbDays>8</mtbDays>
						<partsToAffect>
							<li>Jaw</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>GAB_Toothache</defName>
		<description>A painful toothache from eating acidic food.</description>
		<label>toothache</label>
		<makesSickThought>true</makesSickThought>
		<makesAlert>false</makesAlert>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<initialSeverity>1.0</initialSeverity>
		<tendable>false</tendable>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>7500</min>
					<max>12500</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<painOffset>0.05</painOffset>
			</li>
		</stages>
	</HediffDef>

</Defs>