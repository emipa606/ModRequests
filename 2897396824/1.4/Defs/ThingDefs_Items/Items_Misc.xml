<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>GAB_Ethanol</defName>
    <label>ethanol</label>
    <description>Pure alcohol, distilled from grains. Can be used as fuel or refined into ether in the brewing vat.</description>
    <graphicData>
      <texPath>Things/Items/Other/GAB_Ethanol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <stackLimit>150</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>2.5</MarketValue>
      <Mass>0.05</Mass>
      <Flammability>2</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="ResourceBase">
    <defName>GAB_Ether</defName>
    <label>ether</label>
    <description>A substance of dubious medical use, distilled from ethanol. Can be used as a neutroamine substitute in medicine recipes.</description>
    <graphicData>
      <texPath>Things/Items/Other/GAB_Ether</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <stackLimit>150</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>4</MarketValue>
      <Mass>0.02</Mass>
      <Flammability>1.8</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
   <RecipeDef>
    <defName>Make_MedicineFromEther</defName>
    <label>make medicine from ether</label>
    <description>Make medicine with herbal medicine, ether and cloth.</description>
    <jobString>Making medicine.</jobString>
        <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>2000</workAmount>
	<workSkill>Intellectual</workSkill>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>GAB_Ether</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Cloth</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MedicineHerbal</li>
		<li>GAB_Ether</li>
		<li>Cloth</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MedicineIndustrial>1</MedicineIndustrial>
    </products>
	    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
	<skillRequirements>
      <Crafting>4</Crafting>
        <Intellectual>4</Intellectual>
    </skillRequirements>
	<researchPrerequisite>MedicineProduction</researchPrerequisite>
  </RecipeDef>
  
