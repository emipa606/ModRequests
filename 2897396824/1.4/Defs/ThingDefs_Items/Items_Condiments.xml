<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="RoughPlantBase">
        <defName>GAB_Vinegar</defName>
        <label>vinegar</label>
        <description>A thin, acidic liquid used to brighten and enhance flavour or as a preservative in pickling. Small clumps of bacteria are visible at bottom of the bottle.</description>
        <graphicData>
            <texPath>Things/Items/Condiments/GAB_Vinegar</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>24.2</MarketValue>
            <Nutrition>0.01</Nutrition>
            <Flammability>1.3</Flammability>
        </statBases>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>180</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
        <thingCategories>
            <li MayRequire="VanillaExpanded.VCookE">VCE_Condiments</li>
        </thingCategories>
        <ingestible>
            <preferability>NeverForNutrition</preferability>
            <specialThoughtAsIngredient>GAB_ConsumedVinegar</specialThoughtAsIngredient>
            <optimalityOffsetFeedingAnimals>-50</optimalityOffsetFeedingAnimals>
        </ingestible>
        <ingredient>
		  <mergeCompatibilityTags>
			<li>Condiments</li>
		  </mergeCompatibilityTags>
		</ingredient>
    </ThingDef>

</Defs>