<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>GAB_MakeBaijuMash</defName>
		<label>make baijiu mash</label>
		<description>Make a thick, starchy mash of sorghum and a starter, ready to be fermented.</description>
		<jobString>Making baijiu mash.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workSkill>Cooking</workSkill>
		<effectWorking>Cook</effectWorking>
		<workAmount>1000</workAmount>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>Brewery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>GAB_RawSorghum</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>			
			<thingDefs>
				<li>GAB_RawSorghum</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>			
			<thingDefs>
				<li>GAB_RawSorghum</li>
			</thingDefs>
		</defaultIngredientFilter>
		<products>
			<GAB_BaijuMash>5</GAB_BaijuMash>
		</products>
		<researchPrerequisite>Brewing</researchPrerequisite>
	</RecipeDef>
	
