	  <RecipeDef>
    <defName>GAB_Make_Wort_Barley</defName>
    <label>make wort from barley</label>
    <description>Make wort from barley.</description>
    <jobString>Making wort.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GAB_RawBarley</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GAB_RawBarley</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Wort>5</Wort>
    </products>
  </RecipeDef>

 <RecipeDef>
    <defName>GAB_Make_Ethanol</defName>
    <label>make ethanol from grain</label>
    <description>Make a batch of ethanol by distilling alcohol from grains.</description>
    <jobString>Refining ethanol from grains.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <customSummary>grains</customSummary>
          <thingDefs>
            <li>GAB_RawTriticale</li>
			<li>GAB_RawBarley</li>
			<li>GAB_RawAmaranth</li>
			<li>GAB_RawJeru</li>
			<li>GAB_RawSorghum</li>
			<li>GAB_RawMillet</li>
			<li>GAB_RawRye</li>
			<li>GAB_RawWheat</li>
			<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_RawWheat</li>
          </thingDefs>
		  </filter>
        <count>3.5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
	 <thingDefs>
            <li>GAB_RawTriticale</li>
			<li>GAB_RawBarley</li>
			<li>GAB_RawAmaranth</li>
			<li>GAB_RawJeru</li>
			<li>GAB_RawSorghum</li>
			<li>GAB_RawMillet</li>
			<li>GAB_RawRye</li>
			<li>GAB_RawWheat</li>
			<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_RawWheat</li>
          </thingDefs>
	</fixedIngredientFilter>
    <products>
      <GAB_Ethanol>35</GAB_Ethanol>
    </products>
  </RecipeDef>

</Defs>