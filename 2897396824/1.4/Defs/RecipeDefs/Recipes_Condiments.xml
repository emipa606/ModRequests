<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef MayRequire="VanillaExpanded.VCookE">
		<defName>GAB_MakeFlour</defName>
		<label>make flour</label>
		<description>Make flour, used in baking. Flour is a fine, starchy powder produced by grinding raw grain kernels. It takes a very long time to go bad, if stored in a dry environment.</description>
		<jobString>Making flour.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workSkill>Cooking</workSkill>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>200</workAmount>
		<recipeUsers>
			<li>VCE_CondimentPrepTable</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>GAB_RawSorghum</li>
						<li>GAB_RawMillet</li>
						<li>GAB_RawRye</li>
						<li>GAB_RawWheat</li>
						<li>GAB_RawBarley</li>
						<li>GAB_RawAmaranth</li>
						<li>GAB_RawJeru</li>
						<li>GAB_RawTriticale</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>GAB_RawSorghum</li>
				<li>GAB_RawMillet</li>
				<li>GAB_RawRye</li>
				<li>GAB_RawWheat</li>
				<li>GAB_RawBarley</li>
						<li>GAB_RawAmaranth</li>
						<li>GAB_RawJeru</li>
				<li>GAB_RawTriticale</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<VCE_Flour>45</VCE_Flour>
		</products>
	</RecipeDef>

