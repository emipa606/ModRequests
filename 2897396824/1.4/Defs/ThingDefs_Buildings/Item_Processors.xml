<?xml version="1.0" encoding="utf-8" ?>
<Defs> 
	
	<ThingDef ParentName="BuildingBase">
		<defName>GAB_BaijuPot</defName>
		<label>baijiu pot</label>
		<description>A huge pot meant for aging a high volume of baijiu at once. The composition of the pot allows the baijiu to breathe, but makes it vulnerable to changes in humidity or temperature. Any sunlight or rain hitting the pot may slow down the fermenting process, or even ruin the whole batch.</description>
		<thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
		<graphicData>
			<texPath>Things/Buildings/GAB_BaijuPot</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2.5,2.5)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<stuffCategories>
      		<li>Stony</li>
    	</stuffCategories>
    	<costStuffCount>300</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<uiIconScale>0.8</uiIconScale>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Mass>200</Mass>
			<WorkToBuild>1000</WorkToBuild>
			<MaxHitPoints>250</MaxHitPoints>
			<Flammability>0.1</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<size>(2,2)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>Brewing</li>
		</researchPrerequisites>
		<comps>
			
			<li Class="ItemProcessor.CompProperties_ItemProcessor">
				<buildingOnGraphic>Things/Buildings/GAB_BaijuPot</buildingOnGraphic>
				<numberOfInputs>1</numberOfInputs>
				<acceptsNoneAsInput>false</acceptsNoneAsInput>
				<InsertFirstItemDesc>GAB_InsertBaijuMashDesc</InsertFirstItemDesc>
				<ignoresIngredientLists>true</ignoresIngredientLists>
				<showProgressBar>true</showProgressBar>
				<isSemiAutomaticMachine>true</isSemiAutomaticMachine>
				<resetSemiautomaticIcon>UI/GAB_ResetBaijuMash</resetSemiautomaticIcon>
				
				<chooseIngredientsIcon>UI/GAB_EmptySyrupIcon</chooseIngredientsIcon>

				<bringIngredientsText>GAB_StartInsertionBaijuMash</bringIngredientsText>
				<bringIngredientsDesc>GAB_StartInsertionBaijuMashDesc</bringIngredientsDesc>
				<bringIngredientsIcon>UI/GAB_InsertBaijuMash</bringIngredientsIcon >

				<cancelIngredientsText>GAB_CancelBringingBaijuMash</cancelIngredientsText> 
				<cancelIngredientsDesc>GAB_CancelBringingBaijuMashDesc</cancelIngredientsDesc>
				<cancelIngredientsIcon>UI/GAB_CancelBaijuMash</cancelIngredientsIcon> 
				
				<removeProductText>GAB_RemoveBaiju</removeProductText>
				<removeProductDesc>GAB_RemoveBaijuDesc</removeProductDesc>
				<removeProductIcon>UI/GAB_ExtractBaiju</removeProductIcon>
				
				<isLightDependingMachine>true</isLightDependingMachine>
				<minLight>-1</minLight>
				<maxLight>0.5</maxLight>
				<isTemperatureDependingMachine>true</isTemperatureDependingMachine>
				<minTemp>7</minTemp>
				<maxTemp>25</maxTemp>
				
				<destroyIngredientsAtStartOfProcess>true</destroyIngredientsAtStartOfProcess>

				<isRainDependingMachine>true</isRainDependingMachine>
				<rareTicksToDestroyDueToRain>20</rareTicksToDestroyDueToRain>
				
			</li>

		</comps>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
		<minifiedDef>MinifiedThing</minifiedDef>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>GAB_RaksiStill</defName>
		<label>raksi still</label>
		<description>A pot still used to purify and condense raksi. While an otherwise hardy process, raksi distillation requires constant heating. Any interruption to power may slow down the fermenting process, or even ruin the whole batch.</description>
		<thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
		<graphicData>
			<texPath>Things/Buildings/GAB_RaksiStill</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.5,1.5)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<stuffCategories>
      		<li>Stony</li>
    	</stuffCategories>
    	<costStuffCount>120</costStuffCount>
		<costList>
			<Steel>40</Steel>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<uiIconScale>0.8</uiIconScale>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Mass>10</Mass>
			<WorkToBuild>450</WorkToBuild>
			<MaxHitPoints>120</MaxHitPoints>
			<Flammability>0.1</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>Brewing</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Power">
			<compClass>CompPowerTrader</compClass>
			<basePowerConsumption>100</basePowerConsumption>
			<shortCircuitInRain>true</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Flickable"/>
	     	<li Class="CompProperties_Glower">
        		<glowRadius>3</glowRadius>
        		<glowColor>(252,187,113,0)</glowColor>
      		</li>
      		<li Class="CompProperties_HeatPusher">
        		<compClass>CompHeatPusherPowered</compClass>
        		<heatPerSecond>3.5</heatPerSecond>
        		<heatPushMaxTemperature>12</heatPushMaxTemperature>
      		</li>
			<li Class="ItemProcessor.CompProperties_ItemProcessor">
				<buildingOnGraphic>Things/Buildings/GAB_RaksiStill</buildingOnGraphic>
				<numberOfInputs>1</numberOfInputs>
				<acceptsNoneAsInput>false</acceptsNoneAsInput>
				<InsertFirstItemDesc>GAB_InsertRaksiMashDesc</InsertFirstItemDesc>
				<ignoresIngredientLists>true</ignoresIngredientLists>
				<showProgressBar>true</showProgressBar>
				<isSemiAutomaticMachine>true</isSemiAutomaticMachine>
				<resetSemiautomaticIcon>UI/GAB_ResetRaksiMash</resetSemiautomaticIcon>
				
				<chooseIngredientsIcon>UI/GAB_EmptySyrupIcon</chooseIngredientsIcon>

				<bringIngredientsText>GAB_StartInsertionRaksiMash</bringIngredientsText>
				<bringIngredientsDesc>GAB_StartInsertionRaksiMashDesc</bringIngredientsDesc>
				<bringIngredientsIcon>UI/GAB_InsertRaksiMash</bringIngredientsIcon >

				<cancelIngredientsText>GAB_CancelBringingRaksiMash</cancelIngredientsText> 
				<cancelIngredientsDesc>GAB_CancelBringingRaksiMashDesc</cancelIngredientsDesc>
				<cancelIngredientsIcon>UI/GAB_CancelRaksiMash</cancelIngredientsIcon> 

				<isTemperatureDependingMachine>true</isTemperatureDependingMachine>
				<minTemp>6</minTemp>
				<maxTemp>35</maxTemp>
				
				<destroyIngredientsAtStartOfProcess>true</destroyIngredientsAtStartOfProcess>

				<noPowerDestroysProgress>true</noPowerDestroysProgress>
				<noPowerDestroysMessage>GAB_RaksiFailurePower</noPowerDestroysMessage>				
				<noPowerDestroysInitialWarning>GAB_RaksiFailurePowerWarning</noPowerDestroysInitialWarning>
				<rareTicksToDestroy>30</rareTicksToDestroy>
				
			</li>

		</comps>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
		<minifiedDef>MinifiedThing</minifiedDef>
	</ThingDef>

