<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- barley -->

	<ThingDef ParentName="GAB_GrainBase">
		<defName>GAB_Barley</defName>
		<label>barley plant</label>
		<description>A cereal plant grown as a staple crop in temperate regions.</description>
		<statBases>
			<MaxHitPoints>65</MaxHitPoints>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/Crops/GAB_Barley</texPath>
		</graphicData>
		<plant>
		<immatureGraphicPath>Things/Plants/Crops/GAB_BarleyImmature</immatureGraphicPath>
			<fertilityMin>0.6</fertilityMin>
			<fertilitySensitivity>0.70</fertilitySensitivity>
			<harvestedThingDef>GAB_RawBarley</harvestedThingDef>
			<sowMinSkill>6</sowMinSkill>
			<harvestYield>13</harvestYield>
			<growDays>10</growDays>
			<visualSizeRange>0.5~0.9</visualSizeRange>
		</plant>
	</ThingDef>
	
	<!-- triticale - only if VE Cooking on?-->
	
		<ThingDef ParentName="GAB_GrainBase">
		<defName>GAB_Triticale</defName>
		<label>triticale plant</label>
		<description>A hybrid of wheat and rye. It has the high yield and quality of wheat, and the hardiness of rye.</description>
		<statBases>
			<MaxHitPoints>65</MaxHitPoints>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/Crops/GAB_Triticale</texPath>
		</graphicData>
		<plant>
		<immatureGraphicPath>Things/Plants/Crops/GAB_TriticaleImmature</immatureGraphicPath>
			<fertilitySensitivity>0.65</fertilitySensitivity>
			<harvestedThingDef>GAB_RawTriticale</harvestedThingDef>
			<sowMinSkill>8</sowMinSkill>
			<harvestYield>25</harvestYield>
			<growDays>15</growDays>
			<visualSizeRange>0.6~0.9</visualSizeRange>
			      <sowResearchPrerequisites Inherit="False">
        <li>GAB_HybridGrain</li>
      </sowResearchPrerequisites>
		</plant>
	</ThingDef>
  
