<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Grain Base -->
	<ThingDef Name="GAB_GrainBase" ParentName="PlantBase" Abstract="True">
		<selectable>true</selectable>
		<pathCost>40</pathCost>
   		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<ingestible />
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<maxMeshCount>4</maxMeshCount>
			<sowMinSkill>6</sowMinSkill>
			<harvestWork>200</harvestWork>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<topWindExposure>0.2</topWindExposure>		
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose> 			
		</plant>
	</ThingDef>

<!-- Sorghum Plant -->
	<ThingDef ParentName="GAB_GrainBase">
		<defName>GAB_Sorghum</defName>
		<label>sorghum plant</label>
		<description>A tough, heat-tolerant cereal plant grown as a staple crop in arid regions.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/Crops/GAB_Sorghum</texPath>
		</graphicData>
		<plant>
			<fertilityMin>0.6</fertilityMin>
			<fertilitySensitivity>0.75</fertilitySensitivity>
			<harvestedThingDef>GAB_RawSorghum</harvestedThingDef>
			<sowMinSkill>6</sowMinSkill>
			<harvestYield>13</harvestYield>
			<growDays>12</growDays>
			<visualSizeRange>0.3~0.9</visualSizeRange>
		</plant>
	</ThingDef>

<!-- Millet Plant -->
	<ThingDef ParentName="GAB_GrainBase">
		<defName>GAB_Millet</defName>
		<label>millet plant</label>
		<description>A small-grained, warm-weather cereal plant with a short growing season.</description>
		<statBases>
			<MaxHitPoints>55</MaxHitPoints>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/Crops/GAB_Millet</texPath>
		</graphicData>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<fertilityMin>0.7</fertilityMin>
			<fertilitySensitivity>0.8</fertilitySensitivity>
			<harvestedThingDef>GAB_RawMillet</harvestedThingDef>
			<sowMinSkill>6</sowMinSkill>
			<harvestYield>8</harvestYield>
			<growDays>8</growDays>
			<visualSizeRange>0.3~0.9</visualSizeRange>
		</plant>
	</ThingDef>

<!-- Rye Plant -->
	<ThingDef ParentName="GAB_GrainBase">
		<defName>GAB_Rye</defName>
		<label>rye plant</label>
		<description>A hardy cereal plant that grows well even in somewhat poor soil, but produces a lower yield than other grains.</description>
		<statBases>
			<MaxHitPoints>65</MaxHitPoints>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/Crops/GAB_Rye</texPath>
		</graphicData>
		<plant>
			<fertilitySensitivity>0.65</fertilitySensitivity>
			<harvestedThingDef>GAB_RawRye</harvestedThingDef>
			<sowMinSkill>6</sowMinSkill>
			<harvestYield>9</harvestYield>
			<growDays>12</growDays>
			<visualSizeRange>0.3~0.8</visualSizeRange>
		</plant>
	</ThingDef>
  
</Defs>
