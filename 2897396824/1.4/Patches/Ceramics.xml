<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ceramics</li>
		</mods> 
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Allows Pots and Pot Stills to be made out of Raw Clay from Ceramics -->
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="GAB_BaijuPot" or defName="GAB_RaksiStill"]/stuffCategories</xpath>
					<value>
						<li>Clay</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>

