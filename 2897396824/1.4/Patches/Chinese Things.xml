<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[SZ] [综合内容+持续更新版] 含商咀徵——神州文化扩展 Chinese Traditional Cultural Things Expanded</li>
			<li>[SZ] [旧版本适用+全版本纯净版] 含商咀徵——神州文化扩展 Chinese Traditional Cultural Things Expanded</li>
        </mods>
		<match Class="PatchOperationSequence">
			<operations>

			<!-- Pickle Fruit Recipe -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFruit"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>SZ_ShiTouGan</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFruit"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>SZ_ShiTouGan</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFruit"]/ingredients/li[1]/filter/thingDefs</xpath>
					<value>
						<li>SZ_ShiTouGan</li>
					</value>
				</li>

			<!-- Pickle Produce Recipe -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_PickleProduce"]/fixedIngredientFilter/disallowedThingDefs</xpath>
					<value>
						<li>SZ_ShiTouGan</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_PickleProduce"]/defaultIngredientFilter/disallowedThingDefs</xpath>
					<value>
						<li>SZ_ShiTouGan</li>
					</value>
				</li>
<!-- wine -->
	<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/ingredients/li/filter/thingDefs</xpath>
					<value>
						<li>HuangJiu</li>
						<li>XiongHuangJiu</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>HuangJiu</li>
						<li>XiongHuangJiu</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>HuangJiu</li>
						<li>XiongHuangJiu</li>
					</value>
				</li>


            </operations>
		</match>
    </Operation>

</Patch>