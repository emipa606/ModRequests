<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Cooking Expanded</li>
		</mods> 
		<nomatch Class="PatchOperationFindMod">
		<mods>
		<li>Vanilla Fishing Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFish"]/recipeUsers</xpath>
					<value>
						<li>ElectricStove</li>	
						<li>FueledStove</li>	
					</value>
				</li>
				
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFish"]/ingredientValueGetterClass</xpath>
					<value>
						<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
					</value>
				</li>

				
<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFish"]/fixedIngredientFilter</xpath>
					<value>
					<thingDefs>
					<li>GAB_Vinegar</li>
					</thingDefs>
					</value>
				</li>
				
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFish"]/ingredients/li[2]/count</xpath>
					<value>
					<count>0.01</count>
					</value>
				</li>
				
<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFish"]/defaultIngredientFilter</xpath>
					<value>
					<thingDefs>
					<li>GAB_Vinegar</li>
					</thingDefs>
					</value>
				</li>				
				
</operations>
		</match>
		</nomatch>
	</Operation>	
	
</Patch>

