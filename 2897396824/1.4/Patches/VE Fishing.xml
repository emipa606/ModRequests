<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Fishing Expanded</li>
		</mods> 
		<match Class="PatchOperationSequence">
			<operations>

	<!-- Add pickled fish. Yum. -->
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>

			<RecipeDef>
				<defName>GAB_PickleFish</defName>
				<label>pickle fish x20</label>
				<description>Store cooked fish in a jar full of vinegar. Pickling food greatly extends its shelf life.</description>
				<jobString>Pickling fish.</jobString>
				<workSpeedStat>CookSpeed</workSpeedStat>
				<effectWorking>Cook</effectWorking>
				<soundWorking>Recipe_CookMeal</soundWorking>
				<allowMixingIngredients>true</allowMixingIngredients>
				<workAmount>700</workAmount>
				<recipeUsers>
					<li MayRequire="VanillaExpanded.VCookE">VCE_CondimentPrepTable</li>
				</recipeUsers>
				<ingredientValueGetterClass>VanillaCookingExpanded.IngredientValueGetter_NutritionWithExtraIngredient</ingredientValueGetterClass>
				<ingredients>
					<li>
						<filter>
							<categories>
								<li>VCEF_RawFishCategory</li>

							</categories>
						</filter>
						<count>1</count>
					</li>
					<li>
						<filter>
							<thingDefs>
								<li>GAB_Vinegar</li>
							</thingDefs>
						</filter>
						<count>1</count>
					</li>
				</ingredients>
				<fixedIngredientFilter>
					<categories>
						<li>VCEF_RawFishCategory</li>
					</categories>
				</fixedIngredientFilter>
				<defaultIngredientFilter>
					<categories>
						<li>VCEF_RawFishCategory</li>
					</categories>
					<disallowedCategories>		
					</disallowedCategories>
				</defaultIngredientFilter>
				<products>
					<GAB_PickledFish>20</GAB_PickledFish>
				</products>
			</RecipeDef>
		</value>
	</li>

			</operations>
		</match>
	</Operation>
</Patch>

