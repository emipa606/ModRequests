<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- VFE Medieval -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods> 
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Add wine to vinegar recipe -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/ingredients/li/filter/thingDefs</xpath>
					<value>
						<li>VFEM_Wine</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>VFEM_Wine</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>VFEM_Wine</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

	<!-- VFE Settlers -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Settlers</li>
		</mods> 
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Add chemshine to vinegar recipe -->
