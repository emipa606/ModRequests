<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Cooking Expanded</li>
		</mods> 
		<match Class="PatchOperationSequence">
			<operations>

<!-- Change flour description to reflect it now being made by multiple grain types -->
<li Class="PatchOperationReplace">
	<xpath>/Defs/ThingDef[defName="VCE_Flour"]/description</xpath>
	<value>
		<description>Flour, used in baking. Flour is a fine, starchy powder produced by grinding raw grain kernels. It takes a very long time to go bad, if stored in a dry environment.</description>
	</value>
</li>

<!-- Change VCE Wheat description to reflect new behavior -->
<li Class="PatchOperationReplace">
	<xpath>/Defs/ThingDef[defName="VCE_Wheat"]/description</xpath>
	<value>
		<description>An amber cereal plant that takes almost an entire growing season to come to fruition. While fragile and time-consuming, this plant has a considerable yield.</description>
	</value>
</li>

<!-- Adjusts yield to give the same amount of flour when grains are processed -->
<li Class="PatchOperationReplace">
	<xpath>/Defs/ThingDef[defName="VCE_Wheat"]/plant/harvestYield</xpath>
	<value>
		<harvestYield>18</harvestYield>
	</value>
</li>

<!-- Wheat now drops raw wheat kernels instead of crumbling to flour immediately -->
<li Class="PatchOperationReplace">
	<xpath>/Defs/ThingDef[defName="VCE_Wheat"]/plant/harvestedThingDef</xpath>
	<value>
		<harvestedThingDef>GAB_RawWheat</harvestedThingDef>
	</value>
</li>

			</operations>
		</match>
	</Operation>
</Patch>

