<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MorrowRim - Alcohol</li>
			<li>MorrowRim - Alcohol Remade</li>
		</mods> 
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Add MorrowRim alcohols to vinegar recipe -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/ingredients/li/filter/thingDefs</xpath>
					<value>
						<li>MorrowRim_CyrodiilicBrandy</li>
						<li>MorrowRim_DagothBrandy</li>
						<li>MorrowRim_Flin</li>
						<li>MorrowRim_Greef</li>
						<li>MorrowRim_Mazte</li>
						<li>MorrowRim_Shein</li>
						<li>MorrowRim_Sujamma</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>MorrowRim_CyrodiilicBrandy</li>
						<li>MorrowRim_DagothBrandy</li>
						<li>MorrowRim_Flin</li>
						<li>MorrowRim_Greef</li>
						<li>MorrowRim_Mazte</li>
						<li>MorrowRim_Shein</li>
						<li>MorrowRim_Sujamma</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="GAB_MakeVinegarMust"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>MorrowRim_CyrodiilicBrandy</li>
						<li>MorrowRim_DagothBrandy</li>
						<li>MorrowRim_Flin</li>
						<li>MorrowRim_Greef</li>
						<li>MorrowRim_Mazte</li>
						<li>MorrowRim_Shein</li>
						<li>MorrowRim_Sujamma</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MorrowRim - Alcohol</li>
			<li>MorrowRim - Grazelands</li>
			<li>MorrowRim - Alcohol Remade</li>
		</mods> 
		<match Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Cooking Expanded</li>
		</mods> 
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Add Wickwheat to GrainToFlour and GrainToFlourBulk recipe ingredients -->
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_MakeFlour" or defName="GAB_MakeFlourBulk"]/ingredients/li/filter/thingDefs</xpath>
					<value>
						<li>MorrowRim_RawWickwheat</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_MakeFlour" or defName="GAB_MakeFlourBulk"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>MorrowRim_RawWickwheat</li>
					</value>
				</li>

				<!-- Remove original Wickwheat flour recipe from condiment table -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName="MorrowRim_WickwheatToFlour"]/recipeUsers</xpath>
					<value>
						<recipeUsers>
						</recipeUsers>
					</value>
				</li>

			</operations>
		</match>
		</match>
	</Operation>	
</Patch>

