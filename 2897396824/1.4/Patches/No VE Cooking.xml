<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Cooking Expanded</li>
		</mods> 
		<nomatch Class="PatchOperationSequence">
		<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleMeat" or defName="GAB_PickleProduce" or defName="GAB_PickleFruit" or defName="GAB_PickleEggs"]/recipeUsers</xpath>
					<value>
						<li>ElectricStove</li>	
						<li>FueledStove</li>	
						<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_RusticCookingTable</li>
					</value>
				</li>
				
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleMeat" or defName="GAB_PickleProduce" or defName="GAB_PickleFruit" or defName="GAB_PickleEggs"]/ingredientValueGetterClass</xpath>
					<value>
						<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="GAB_Vinegar"]/thingCategories</xpath>
					<value>
						<li>PlantMatter</li>
					</value>
				</li>
				
<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleMeat" or defName="GAB_PickleProduce" or defName="GAB_PickleEggs"]/fixedIngredientFilter</xpath>
					<value>
					<thingDefs>
					<li>GAB_Vinegar</li>
					</thingDefs>
					</value>
				</li>
				
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleMeat" or defName="GAB_PickleProduce" or defName="GAB_PickleEggs"]/ingredients/li[2]/count</xpath>
					<value>
					<count>0.01</count>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFruit"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
					<li>GAB_Vinegar</li>
					</value>
				</li>
<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleMeat" or defName="GAB_PickleProduce" or defName="GAB_PickleEggs"]/defaultIngredientFilter</xpath>
					<value>
					<thingDefs>
					<li>GAB_Vinegar</li>
					</thingDefs>
					</value>
				</li>				
				
<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName="GAB_PickleFruit"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
					<li>GAB_Vinegar</li>
					</value>
				</li>								
				
</operations>
		</nomatch>
	</Operation>
	
</Patch>

