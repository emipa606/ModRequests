<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>TM_PsionicLichHediff</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Psionic Lich</label>
    <description>A psionic lich: Its flesh remains pliant, soft, and warm to the touch, no blood flows through its veinsâ€”it is psionic power that animates the flesh. If you cut a psionic lich, its veins are empty of blood, though stray sparks of power flash briefly. Its eyes are always completely silvered and glowing with a faint radiance. Being Undead, the psionic lich has no need to eat, breath, or sleep.</description>
    <defaultLabelColor>(1,1,0)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <makesSickThought>false</makesSickThought>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>1</severityPerDay>
      </li>
    </comps>
    <tendable>false</tendable>
    <makesAlert>false</makesAlert>
    <minSeverity>1</minSeverity>
    <maxSeverity>5</maxSeverity>
    <initialSeverity>1</initialSeverity>
    <isBad>false</isBad>
    <disablesNeeds>
      <li>Rest</li>
      <!-- <li>Food</li>-->
    </disablesNeeds>
    <stages>
      <li>
        <label>developing</label>
        <minSeverity>0.5</minSeverity>
        <becomeVisible>true</becomeVisible>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
        <statOffsets/>
        <statFactors>
          <ToxicSensitivity>0</ToxicSensitivity>
          <ImmunityGainSpeed>10</ImmunityGainSpeed>
          <Mass>0.66</Mass>
        </statFactors>
        <totalBleedFactor>0</totalBleedFactor>
        <naturalHealingFactor>10</naturalHealingFactor>
        <hungerRateFactor>0</hungerRateFactor>
        <painFactor>0</painFactor>
      </li>
      <li>
        <label/>
        <minSeverity>4</minSeverity>
        <becomeVisible>true</becomeVisible>
        <statOffsets/>
        <statFactors>
          <ToxicSensitivity>0</ToxicSensitivity>
          <ImmunityGainSpeed>10</ImmunityGainSpeed>
          <Mass>0.66</Mass>
        </statFactors>
        <totalBleedFactor>0</totalBleedFactor>
        <hungerRateFactor>0</hungerRateFactor>
        <painFactor>0</painFactor>
      </li>
    </stages>
  </HediffDef>
</Defs>