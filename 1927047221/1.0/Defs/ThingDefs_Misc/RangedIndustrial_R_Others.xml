     <!-- ================================= SG550 ==================================== -->

   <ThingDef ParentName="RNBaseAssaultRifle">
    <defName>RNGun_SIGSG550AR</defName>
    <label>SG 550</label>
    <description>The SG 550 is an assault rifle manufactured by Swiss Arms AG (formerly a division of Schweizerische Industrie Gesellschaft, now known as SIG Holding AG) in Switzerland. "SG" is an abbreviation for Sturmgewehr, or "assault rifle".
	
The rifle is based on the earlier 5.56mm SG 540.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Rifles/Others/SIG_SG_550</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.58</AccuracyTouch>
      <AccuracyShort>0.63</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.64</AccuracyLong>
      <RangedWeapon_Cooldown>1.55</RangedWeapon_Cooldown>
    </statBases>
	
	<equippedAngleOffset>40</equippedAngleOffset>		
	
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RNBullet_556x45_Rifle</defaultProjectile>
        <warmupTime>0.85</warmupTime>
        <range>35.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>RNShot_GenericAR_IV</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<!--<li>IndustrialGunAdvanced</li>-->
			<li>RN_SG550</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>    

	 
