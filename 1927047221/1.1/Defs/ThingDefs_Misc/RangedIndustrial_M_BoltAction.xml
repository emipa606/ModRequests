<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================================= Bolt Actions ==================================== -->


        <!-- ================================= FN Ballista ==================================== -->

  <ThingDef ParentName="RNBaseBoltAction">
    <defName>RNGun_FNBallista</defName>
    <label>FN Ballista</label>
    <description>The FN Ballista is a sniper rifle developed by FN Herstal. The company states that the Ballista's design compares with the Remington MSR, the Armalite AR-30, and the Accuracy International AWM. 
	
The Ballista is a modular, air-cooled, magazine-fed, manually operated, bolt-action sniper rifle that is multi-caliber capable.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/M_Bolt_Action/FNBallista</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
	<equippedAngleOffset>40</equippedAngleOffset>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.62</AccuracyTouch>
      <AccuracyShort>0.73</AccuracyShort>
      <AccuracyMedium>0.83</AccuracyMedium>
      <AccuracyLong>0.84</AccuracyLong>
      <RangedWeapon_Cooldown>2.25</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RNBullet_308Winchester_Sniper</defaultProjectile>
        <warmupTime>3.4</warmupTime>
        <range>45.9</range>
        <soundCast>RNShotBallista</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags Inherit="False">
      <!--<li>SniperRifle</li>-->
	  <li>RN_Ballista</li>
    </weaponTags>
  </ThingDef>
  
