<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
            <li>ideology</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationInsert">
                    <xpath>/Defs/PreceptDef/*def[defName="InsectMeatEating_Loved"]/comps</xpath>
                    <value>
                        <li Class="PreceptComp_SelfTookMemoryThought">
                            <eventDef>Insectoidarmor_uncomfortant</eventDef>
                            <thought>Insectoidarmor_comfortant</thought>
                        </li>
                        <li Class="PreceptComp_SelfTookMemoryThought">
                            <eventDef>Insectoidhelmet_uncomfortant</eventDef>
                            <thought>Insectoidhelmet_comfortant</thought>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
	
	   <Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
            <li>Improved Insectoids</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationInsert">
                    <xpath>Ideology/Defs/PreceptDefs/def[defName="TamingInsectoids_Loved"]/comps</xpath>
                    <value>
                        <li Class="PreceptComp_SelfTookMemoryThought">
                            <eventDef>Insectoidarmor_uncomfortant</eventDef>
                            <thought>Insectoidarmor_comfortant</thought>
                        </li>
                        <li Class="PreceptComp_SelfTookMemoryThought">
                            <eventDef>Insectoidhelmet_uncomfortant</eventDef>
                            <thought>Insectoidhelmet_comfortant</thought>
                        </li>
                    </value>
                </li>
				
				<li Class="PatchOperationInsert">
                    <xpath>Ideology/Defs/PreceptDefs/def[defName="InsectoidSlaughter_Abhorrent"]/comps</xpath>
                    <value>
                        <li Class="PreceptComp_SelfTookMemoryThought">
                            <eventDef>Insectoidarmor_uncomfortant</eventDef>
                            <thought>Insectoidarmor_comfortant</thought>
                        </li>
                        <li Class="PreceptComp_SelfTookMemoryThought">
                            <eventDef>Insectoidhelmet_uncomfortant</eventDef>
                            <thought>Insectoidhelmet_comfortant</thought>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
		
</Patch>