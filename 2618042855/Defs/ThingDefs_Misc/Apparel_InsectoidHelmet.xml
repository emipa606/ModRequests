<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_MegaspiderHelmet</defName>
    <label>Megaspider Helmet</label>
	<comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>Insectoid_helmet</hediff>
        <part>Head</part>
      </li>
    </comps>
    <description>A Helmet which made of Megaspider corpse, gives the owner a minor mood debuff when worn.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Things/InsectoidHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
		<costList>
			<Corpse_Megaspider>1</Corpse_Megaspider>
		</costList>
		<equippedStatOffsets>
			<MoveSpeed>-0.02</MoveSpeed>
	  <SocialImpact>-0.05</SocialImpact>
	  <NegotiationAbility>0.05</NegotiationAbility>
		</equippedStatOffsets>	
    <statBases>
	  <MarketValue>70</MarketValue>
      <WorkToMake>7550</WorkToMake>
      <MaxHitPoints>75</MaxHitPoints>
      <Mass>2.3</Mass>
      <ArmorRating_Sharp>0.53</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.23</ArmorRating_Blunt>
      <ArmorRating_Heat>0.30</ArmorRating_Heat>
      <Insulation_Cold>17</Insulation_Cold>
      <Insulation_Heat>7</Insulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <recipeUsers>
		<li>CraftingSpot</li>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
	        <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
	  <wornGraphicPath>Things/InsectoidHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
    </apparel>
  </ThingDef>

</Defs>
