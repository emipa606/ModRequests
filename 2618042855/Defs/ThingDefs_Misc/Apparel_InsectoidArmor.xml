<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ArmorSmithableBase">
    <defName>Apparel_MegaspiderArmor</defName>
    <description>An armor made of megaspider corpse. its own texture inside makes user feel horrible.</description>
    <label>Megaspider armor</label>
	<comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>Insectoid_armor</hediff>
        <part>Torso</part>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <recipeUsers>
		<li>CraftingSpot</li>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
	  <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
	
	
    <graphicData>
      <texPath>Things/InsectoidArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.05</drawSize>
    </graphicData>
		<equippedStatOffsets>
			<MoveSpeed>-0.53</MoveSpeed>
			<SocialImpact>-0.05</SocialImpact>
			<NegotiationAbility>0.05</NegotiationAbility>
		</equippedStatOffsets>	
		<costList>
		    <Corpse_Megaspider>2</Corpse_Megaspider>
		</costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
	  <MarketValue>265</MarketValue>
      <MaxHitPoints>175</MaxHitPoints>
      <WorkToMake>17500</WorkToMake>
      <Mass>16.5</Mass>
	  <ArmorRating_Sharp>0.53</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.27</ArmorRating_Blunt>
	  <ArmorRating_Heat>0.35</ArmorRating_Heat>
	  <Insulation_Cold>21</Insulation_Cold>
	  <Insulation_Heat>9</Insulation_Heat>
      <EquipDelay>6</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
		<li>Hands</li>
		<li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/InsectoidArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
		<li>Middle</li>
      </layers>
	</apparel>
  </ThingDef>

  
</Defs>
