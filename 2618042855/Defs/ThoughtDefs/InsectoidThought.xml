<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>Insectoid_armor</defName>
    <label>Insectoid armor</label>
    <description>An insectoid armor is making the user feel very bad.</description>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0,0.6,0.2)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<stages>
      <li>
        <label>Worn Insectoid armor</label>
		<becomeVisible>false</becomeVisible>
      </li>
	</stages>
	<comps>
      <li Class="HediffCompProperties_RemoveIfApparelDropped" />
    </comps>
  </HediffDef>
  
  <ThoughtDef>
    <defName>Insectoidarmor_uncomfortant</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>Insectoid_armor</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Worn Insectoid armor</label>
        <description>It's protection is highly valueable... but wearing insect feels bad.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
	</stages>
   </ThoughtDef>
   
     <ThoughtDef>
    <defName>Insectoidarmor_comfortant</defName>
    <stages>
      <li>
        <label>Addictive Insectoid armor</label>
        <description>Well.. but its somewhat addictive.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
	</stages>
   </ThoughtDef>

  <HediffDef>
    <defName>Insectoid_helmet</defName>
    <label>Insectoid helmet</label>
    <description>An insectoid helmet that feels wierd.</description>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0,0.6,0.2)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<stages>
      <li>
        <label>Worn Insectoid helmet</label>
		<becomeVisible>false</becomeVisible>
      </li>
	</stages>
	<comps>
      <li Class="HediffCompProperties_RemoveIfApparelDropped" />
    </comps>
  </HediffDef>
  
  <ThoughtDef>
    <defName>Insectoidhelmet_uncomfortant</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>Insectoid_helmet</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Worn Insectoid helmet</label>
        <description>I think some gel-like stuff is inside my ear.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
	</stages>
   </ThoughtDef>

        <ThoughtDef>
    <defName>Insectoidhelmet_comfortant</defName>
    <stages>
      <li>
        <label>Addictive Insectoid helmet</label>
        <description>My head is feeling those insect gel.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
	</stages>
   </ThoughtDef>

   
</Defs>