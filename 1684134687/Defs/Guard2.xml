<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_GuardSWAP</defName>
    <label>Guard gunblade</label>
    <description>A hi-tech plasma gunblade derived from the earlier Guard pistol. The bayonet has been replaced with an armor-nullifying thermal edge, while the pistol itself has been upgraded with improved plasma emitters that allow for higher stopping power. No, this one doesn't have a riot shield either, can you please stop asking?</description>
    <graphicData>
      <texPath>Guard2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
	  </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.99</AccuracyTouch>
      <AccuracyShort>0.95</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
	  <Plasteel>8</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_GuardSWAP</defaultProjectile>
        <warmupTime>0.4</warmupTime>
        <range>20</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<weaponTags>
		<li>SpacerGun</li>
	</weaponTags>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>24</power>
		<armorPenetration>0.33</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
          <li>Poke</li>
        </capacities>
        <power>24</power>
		<armorPenetration>0.33</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_GuardSWAP</defName>
    <label>Guard gunblade bullet</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>17</damageAmountBase>
	  <stoppingPower>1.3</stoppingPower>
      <speed>100</speed>
    </projectile>
  </ThingDef>

</Defs>