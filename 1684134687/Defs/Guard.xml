<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_Guard</defName>
    <label>Guard pistol</label>
    <description>A small-caliber plasma pistol with bayonet designed for ease of manufacture. Cheap and surprisingly accurate at medium range, this weapon is commonly found in the hands of Urbworld combat engineers and police forces. The bayonet gives this weapon an edge in close quarters combat, making it ideal for frontline work. Eh? What's this about a riot shield?</description>
    <graphicData>
      <texPath>Guard</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
	  </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.99</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.44</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
	  <Plasteel>4</Plasteel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
	<weaponTags>
      <li>SpacerGun</li>
	</weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Guard</defaultProjectile>
        <warmupTime>0.4</warmupTime>
        <range>18</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
        <soundCast>Shot_MachinePistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
          <li>Poke</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Guard</defName>
    <label>Guard bullet</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
	  <stoppingPower>1.3</stoppingPower>
      <speed>100</speed>
    </projectile>
  </ThingDef>

</Defs>