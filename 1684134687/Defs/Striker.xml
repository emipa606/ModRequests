<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>SangvisGun_Striker</defName>
		<label>Striker Gatling</label>
		<description>A hi-tech three-barrel gatling gun designed for ease of manufacture. Its low caliber allows for relatively accurate long-term sustained fire, however, its weight and lack of armor penetration make it non-viable against armored targets. Often seen in CIWS turrets, action movies, fighter planes, and the raves hosted at Sanvis Ferri company afterparties.</description>
		<graphicData>
			<texPath>Striker</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
		<statBases>
			<WorkToMake>18000</WorkToMake>
			<Mass>18</Mass>
			<AccuracyTouch>0.55</AccuracyTouch>
			<AccuracyShort>0.64</AccuracyShort>
			<AccuracyMedium>0.73</AccuracyMedium>
			<AccuracyLong>0.24</AccuracyLong>
			<RangedWeapon_Cooldown>3.50</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>16</Plasteel>
			<ComponentIndustrial>6</ComponentIndustrial>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
    <verbs>
		<li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_Striker</defaultProjectile>
			<warmupTime>2.5</warmupTime>
			<range>35.9</range>
			<burstShotCount>50</burstShotCount>
			<ticksBetweenBurstShots>4</ticksBetweenBurstShots>
			<soundCast>Shot_Minigun</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		</li>
	</verbs>
	<weaponTags>
      <li>GunHeavy</li>
	</weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>
 <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Striker</defName>
    <label>Striker bullet</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <color>(255,255,51)</color>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>6</damageAmountBase>
	  <stoppingPower>0.1</stoppingPower>
      <speed>75</speed>
    </projectile>
  </ThingDef>
  
</Defs>