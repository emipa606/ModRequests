<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_Executioner</defName>
    <label>Executioner Pistol</label>
    <description>A high-power hand cannon developed for Model SP524 "Executioner". Despite the unassuming look, this pistol commands respect through overwhelming firepower, and no expense has been spared to pack all the firepower of a Charge Lance into a compact package. Sword not included!</description>
    <graphicData>
      <texPath>Executioner</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>13</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.88</AccuracyShort>
      <AccuracyMedium>0.64</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>65</Plasteel>
      <ComponentIndustrial>8</ComponentIndustrial>
	  <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Executioner</defaultProjectile>
        <warmupTime>0.4</warmupTime>
        <range>26</range>
        <soundCast>ChargeLance_Fire</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Executioner</defName>
    <label>Executioner bullet</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <color>(173,255,47)</color>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>41</damageAmountBase>
      <stoppingPower>4.9</stoppingPower>
	  <armorPenetrationBase>0.25</armorPenetrationBase>
      <speed>100</speed>
    </projectile>
  </ThingDef>

</Defs>