<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_Gaia</defName>
    <label>Gaia Launchers</label>
    <description>Twin grenade launchers, upgraded versions of the earlier Destroyer designs. The modified Gaia launcher makes up for the earlier model's inaccuracy through sheer rate of fire, saturating an area with explosive might.</description>
    <graphicData>
      <texPath>Gaia</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>24</Mass>
      <AccuracyTouch>0.33</AccuracyTouch>
      <AccuracyShort>0.40</AccuracyShort>
      <AccuracyMedium>0.36</AccuracyMedium>
      <AccuracyLong>0.24</AccuracyLong>
      <RangedWeapon_Cooldown>6.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>400</Steel>
	  <Plasteel>60</Plasteel>
      <ComponentIndustrial>20</ComponentIndustrial>
	  <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Gaia</defaultProjectile>
		<forcedMissRadius>5.33</forcedMissRadius>
        <warmupTime>1.2</warmupTime>
		<ai_AvoidFriendlyFireRadius>13</ai_AvoidFriendlyFireRadius>
        <range>29.9</range>
		<burstShotCount>15</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
		<soundAiming>OrbitalTargeter_Aiming</soundAiming>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
		<targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Gaia</defName>
    <label>Gaia grenade</label>
    <graphicData>
      <texPath>Bullet_Gaia</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
	</graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
	  <damageAmountBase>69</damageAmountBase>
      <explosionRadius>1.33</explosionRadius>
      <speed>55</speed>
	  <explosionDelay>48</explosionDelay>
    </projectile>
  </ThingDef>

</Defs>