<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_Vespid</defName>
    <label>Vespid Rifle</label>
    <description>A hi-tech battle rifle designed for ease of manufacture. Decent firepower and a two-round burst with marginal recoil make it the preferred rifle in medium range combat. Colonists using this rifle seem to slowly develop an affinity for strange-looking helmets.</description>
    <graphicData>
      <texPath>Vespid</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
	  </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>15500</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.95</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>8</Plasteel>
      <ComponentIndustrial>16</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Vespid</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>38.9</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>9</ticksBetweenBurstShots>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<weaponTags>
		<li>SpacerGun</li>
	</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Vespid</defName>
    <label>Vespid rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <color>(0,191,255)</color>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>19</damageAmountBase>
      <speed>82</speed>
    </projectile>
  </ThingDef>

</Defs>