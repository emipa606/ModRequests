<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_Architect</defName>
    <label>Architect Missile</label>
    <description>A reusable missile launcher adapted from the Doomsday rocket platform for Model SPzh3000 "Architect". A proposal to fit it with normal rockets was immediately discarded in favor of "something that looks a lot cooler."</description>
    <graphicData>
      <texPath>Architect</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <WorkToMake>65000</WorkToMake>
      <Mass>16</Mass>
      <AccuracyTouch>0.33</AccuracyTouch>
      <AccuracyShort>0.40</AccuracyShort>
      <AccuracyMedium>0.36</AccuracyMedium>
      <AccuracyLong>0.24</AccuracyLong>
      <RangedWeapon_Cooldown>20.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Gun_DoomsdayRocket>2</Gun_DoomsdayRocket>
	  <Gun_TripleRocket>1</Gun_TripleRocket>
	  <Plasteel>40</Plasteel>
      <ComponentIndustrial>15</ComponentIndustrial>
	  <ComponentSpacer>3</ComponentSpacer>
    </costList>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Architect</defaultProjectile>
        <forcedMissRadius>1.9</forcedMissRadius>
        <warmupTime>4.5</warmupTime>
        <ai_AvoidFriendlyFireRadius>8</ai_AvoidFriendlyFireRadius>
        <range>45.9</range>
        <burstShotCount>3</burstShotCount>
		<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
		<soundAiming>OrbitalTargeter_Aiming</soundAiming>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
		<targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Architect</defName>
    <label>Architect missile</label>
    <graphicData>
      <texPath>Architect_Missile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
	</graphicData>
    <thingClass>Projectile_DoomsdayRocket</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
	  <damageAmountBase>42</damageAmountBase>
      <explosionRadius>4.04</explosionRadius>
      <speed>42</speed>
    </projectile>
  </ThingDef>

</Defs>