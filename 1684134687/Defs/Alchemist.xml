<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_Alchemist</defName>
    <label>Sangvis Gunblades</label>
    <description>A pair of hi-tech Sangvis gunblades built for Model SP7C "Alchemist". Deals heavy damage from short range, however, its short barrels results in poor accuracy at longer distances. Teleportation system not included.</description>
    <graphicData>
      <texPath>Alchemist</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>13</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>5.5</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.25</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>1.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>107</Steel>
      <ComponentIndustrial>13</ComponentIndustrial>
	  <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Alchemist</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>30</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<weaponTags Inherit='False'/>
    <tools>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>30</power>
		<armorPenetration>0.50</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
          <li>Poke</li>
        </capacities>
        <power>30</power>
		<armorPenetration>0.50</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Alchemist</defName>
    <label>Gunblade bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>16</damageAmountBase>
	  <stoppingPower>1.2</stoppingPower>
      <speed>80</speed>
    </projectile>
  </ThingDef>

</Defs>