<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_Destroyer</defName>
    <label>Destroyer Launchers</label>
    <description>Twin grenade launchers designed to fit the smaller frame of Model SP5NANO "Destroyer". Hilarious firepower, no accuracy to speak of. The controls are so simple, a child could fire it... though, they probably wouldn't be able to carry it. It's pretty heavy.</description>
    <graphicData>
      <texPath>Destroyer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>16</Mass>
      <AccuracyTouch>0.33</AccuracyTouch>
      <AccuracyShort>0.20</AccuracyShort>
      <AccuracyMedium>0.18</AccuracyMedium>
      <AccuracyLong>0.12</AccuracyLong>
      <RangedWeapon_Cooldown>4.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
	  <Plasteel>40</Plasteel>
      <ComponentIndustrial>20</ComponentIndustrial>
	  <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>13</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Destroyer</defaultProjectile>
		<forcedMissRadius>7.66</forcedMissRadius>
        <warmupTime>0.9</warmupTime>
		<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>24.9</range>
		<burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>48</ticksBetweenBurstShots>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
		<targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Destroyer</defName>
    <label>Destroyer grenade</label>
    <graphicData>
      <texPath>Bullet_Destroyer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
	</graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
	  <damageAmountBase>42</damageAmountBase>
      <explosionRadius>1.33</explosionRadius>
      <speed>50</speed>
	  <explosionDelay>15</explosionDelay>
    </projectile>
  </ThingDef>

</Defs>