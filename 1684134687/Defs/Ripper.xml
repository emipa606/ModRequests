<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>SangvisGun_Ripper</defName>
		<label>Ripper SMG</label>
		<description>A hi-tech SMG designed for ease of manufacturing. Its cheap price, effectiveness and reliability make it highly popular with Urbworld PMCs and artillery crews. Looks incredibly stylish when combined with skin-tight bodysuits.</description>
		<graphicData>
			<texPath>Ripper</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_SMG</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
	  </recipeUsers>
    </recipeMaker>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<Mass>3.5</Mass>
			<AccuracyTouch>0.90</AccuracyTouch>
			<AccuracyShort>0.75</AccuracyShort>
			<AccuracyMedium>0.25</AccuracyMedium>
			<AccuracyLong>0.20</AccuracyLong>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>5</Plasteel>
			<ComponentIndustrial>10</ComponentIndustrial>
		</costList>
    <verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Ripper</defaultProjectile>
				<warmupTime>0.7</warmupTime>
				<range>26</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
				<soundCast>Shot_ChargeRifle</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>8</muzzleFlashScale>
			</li>
		</verbs>
	<weaponTags>
      <li>SpacerGun</li>
	</weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>
 <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Ripper</defName>
    <label>Ripper bullet</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <color>(255,215,0)</color>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>11</damageAmountBase>
	  <stoppingPower>0.5</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  
</Defs>