<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_Dreamer</defName>
    <label>Dreamer Rifle</label>
    <description>Hi-tech Sangvis rifle, manufactured for Model SPACA "Dreamer". The high caliber gives it outstanding damage, range, and penetration, but its weight and accuracy are costly downsides. Rumors of a hidden "high-intensity incendiary laser mode" have so far proven unfounded.</description>
    <graphicData>
      <texPath>Dreamer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>52000</WorkToMake>
      <Mass>12</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.74</AccuracyMedium>
      <AccuracyLong>0.82</AccuracyLong>
      <RangedWeapon_Cooldown>3.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>240</Steel>
	  <Plasteel>40</Plasteel>
      <ComponentIndustrial>7</ComponentIndustrial>
	  <ComponentSpacer>6</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Dreamer</defaultProjectile>
        <warmupTime>2.2</warmupTime>
        <range>64</range>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>7</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>3</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>14</power>
        <cooldownTime>3</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Dreamer</defName>
    <label>Dreamer rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <color>(138,43,226)</color>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>100</damageAmountBase>
	  <armorPenetrationBase>0.35</armorPenetrationBase>
      <stoppingPower>3.7</stoppingPower>
      <speed>175</speed>
    </projectile>
  </ThingDef>

</Defs>