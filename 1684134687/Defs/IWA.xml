<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SangvisGun_M4IWA</defName>
    <label>Inherited Weapon Arsenal</label>
    <description>Prototype Sangvis design for a concealable infantry-mounted railgun using a miniature JT drive. It doesn't matter whose hands this weapon finds itself in, the overwhelming firepower and ability to completely ignore armor make this an instrument of vengeance. Cinnamon rolls beware.</description>
    <graphicData>
      <texPath>IWA</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeLance</soundInteract>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>15.0</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.89</AccuracyShort>
      <AccuracyMedium>0.99</AccuracyMedium>
      <AccuracyLong>0.76</AccuracyLong>
      <RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Uranium>200</Uranium>
	  <Plasteel>100</Plasteel>
	  <Gold>40</Gold>
      <ComponentSpacer>15</ComponentSpacer>
    </costList>
    <recipeMaker>
	  <researchPrerequisite>ShipEngine</researchPrerequisite>
      <skillRequirements>
        <Crafting>18</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_IWA</defaultProjectile>
		<forcedMissRadius>0.24</forcedMissRadius>
        <warmupTime>2.5</warmupTime>
		<ai_AvoidFriendlyFireRadius>2</ai_AvoidFriendlyFireRadius>
        <range>49.9</range>
		<soundAiming>OrbitalTargeter_Aiming</soundAiming>
        <soundCast>Shot_TurretSniper</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>1</muzzleFlashScale>
		<targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>side</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>end</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_IWA</defName>
    <label>Railgun kinetic impactor</label>
    <graphicData>
      <texPath>Things/Projectile/Pilum</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <color>(60,60,60)</color>
	  <shaderType>TransparentPostLight</shaderType>
	</graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
	  <damageAmountBase>500</damageAmountBase>
      <explosionRadius>1.8</explosionRadius>
      <speed>300</speed>
    </projectile>
  </ThingDef>

</Defs>