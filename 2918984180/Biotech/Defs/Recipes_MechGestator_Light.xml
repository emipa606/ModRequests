<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef ParentName="LightMechanoidRecipe">
		<defName>Mech_SD_Roomba</defName>
		<label>gestate stabby roomba</label>
		<description>Gestate a cleansweeper mechanoid with a knife.</description>
		<researchPrerequisite>BasicMechtech</researchPrerequisite>
		<products>
			<Mech_SD_Roomba>1</Mech_SD_Roomba>
		</products>
		<descriptionHyperlinks>
			<ThingDef>Mech_SD_Roomba</ThingDef>
		</descriptionHyperlinks>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MeleeWeapon_Knife</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
	</RecipeDef>

	<RecipeDef ParentName="LightMechanoidRecipe">
		<defName>Mech_SD_RoombaClaymore</defName>
		<label>gestate claymore roomba</label>
		<description>Gestate a cleansweeper mechanoid with a claymore landmine.</description>
		<researchPrerequisite>BasicMechtech</researchPrerequisite>
		<products>
			<Mech_SD_RoombaClaymore>1</Mech_SD_RoombaClaymore>
		</products>
		<descriptionHyperlinks>
			<ThingDef>Mech_SD_RoombaClaymore</ThingDef>
		</descriptionHyperlinks>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Shell_HighExplosive</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
	</RecipeDef>

	<RecipeDef ParentName="BaseMechanoidResurrectionRecipe">
		<defName>SD_ResurrectClaymoreRoomba</defName>
		<label>resurrect claymore roomba</label>
		<description>Resurrect a friendly claymore roomba. The claymore mine mounted will need to be replenished in the process.</description>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Corpses</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Shell_HighExplosive</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Corpse_Mech_SD_RoombaClaymore</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
</Defs>