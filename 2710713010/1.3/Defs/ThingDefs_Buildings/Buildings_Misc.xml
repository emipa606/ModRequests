<Defs>
  
  <ThingDef ParentName="BuildingBase">
    <defName>DF_WorldScanner</defName>
    <label>world scanner</label>
    <description>A set of mysterious tools on a stone table. These devices will allow the user to scan the world for sites of particular auspice: dungeons.</description>    
    <category>Building</category>
    <graphicData>
      <texPath>Things/Buildings/WorldScanner</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
	  <drawSize>(3, 2)</drawSize>
    </graphicData>
	<size>(3, 2)</size>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>42</pathCost>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.20</fillPercent>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>200</WorkToBuild>
      <Flammability>0</Flammability>
      <WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
      <MeditationFocusStrength>0.0</MeditationFocusStrength>
    </statBases>
    <selectable>true</selectable>
	<recipeMaker>
		<researchPrerequisite>DF_DungeonScrying</researchPrerequisite>
	</recipeMaker>
    <costList>
      <Jade>50</Jade>
      <Gold>25</Gold>
      <Steel>75</Steel>
      <Uranium>50</Uranium>
    </costList>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>250</costStuffCount>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
	  <li Class="DungeonsCore.CompProperties_WorldScanner">
		<scanSpeedStat>ResearchSpeed</scanSpeedStat>
        <scanFindMtbDays>4</scanFindMtbDays>
        <scanFindGuaranteedDays>8</scanFindGuaranteedDays>
	  </li>
    </comps>
    <designationCategory>Misc</designationCategory>
    <designationHotKey>Misc1</designationHotKey>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
  </ThingDef>

