<?xml version="1.0" encoding="utf-8"?>
<Defs>


    <!-- Abstract classes -->

    <ThingDef Name="COMIGO_Pot_Square" ParentName="BuildingBase" Abstract="True">
        <defName>COMIGO_Pot_Square</defName>
        <label>garden pot</label>
        <designationCategory>Production</designationCategory>
        <description>A container with soil to allow growing plants indoors or on stony surfaces, or just for aesthetic.
The pots and garden beds are a bit more clean than just soil and are considered cute, similarly to flower pots.</description>
        <thingClass>Building_PlantGrower</thingClass>

        <size>(1,1)</size>
        <graphicData>
            <texPath>Buildings/Production/COMIGO_SmallPot</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(1,1)</drawSize>
            <drawRotated>false</drawRotated>
            <allowFlip>false</allowFlip>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>0.30</fillPercent>
        <altitudeLayer>LowPlant</altitudeLayer>
        <defaultPlacingRot>East</defaultPlacingRot>

        <passability>PassThroughOnly</passability>
        <pathCost>30</pathCost>
        <canOverlapZones>false</canOverlapZones>
        <statBases>
            <WorkToBuild>350</WorkToBuild>
            <MaxHitPoints>80</MaxHitPoints>
            <Flammability>0.9</Flammability>
            <Cleanliness>-0.5</Cleanliness>
            <Beauty>1</Beauty>
            <Mass>10</Mass>
        </statBases>

        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>35</costStuffCount>
        <costList>
            <SR_Soil MayRequire="UdderlyEvelyn.SoilRelocation">12</SR_Soil>
        </costList>

        <fertility>1.0</fertility>
        <building>
            <defaultPlantToGrow>Plant_Potato</defaultPlantToGrow>
            <sowTag>Hydroponic</sowTag>
            <buildingTags>
                <li>Production</li>
            </buildingTags>
            <paintable>true</paintable>
        </building>
        <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
        <tickerType>Rare</tickerType>
        <comps>
            <li Class="CompProperties_Forbiddable" />
        </comps>

        <researchPrerequisites>
            <li>COMIGO_Gardening</li>
        </researchPrerequisites>

        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    </ThingDef>

