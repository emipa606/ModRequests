<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
	<defName>CE_MeleeWeapon_TrenchClubM</defName>
	<label>Trench Club</label>
    <techLevel>Medieval</techLevel>
	<description>Literally Everyone. A field-made melee weapon.</description>
	<graphicData>
		<texPath>Things/Item/Equipment/WeaponMelee/TrenchClub</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
    <weaponTags>
      <li>CE_Sidearm_Melee</li>
	  <li>CE_OneHandedWeapon</li>
    </weaponTags>
    <costList>
      <Steel>15</Steel>
    </costList>
	<statBases>
		<WorkToMake>1800</WorkToMake>
		<Mass>1.25</Mass>
		<Bulk>4</Bulk>
		<MeleeCounterParryBonus>0.15</MeleeCounterParryBonus>
	</statBases>
	<equippedAngleOffset>-65</equippedAngleOffset>
