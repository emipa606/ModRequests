		<xpath>Defs/ThingDef[defName="Apparel_IA_ConquererHelmet"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>20</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_IA_ConquererHelmet"]/statBases/ArmorRating_Blunt</xpath>
