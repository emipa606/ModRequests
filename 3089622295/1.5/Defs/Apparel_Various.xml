<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ArmorMachineableBase" >
		<defName>Apparel_IA_SpecOpsArmor</defName>
		<label>imperial light armor</label>
		<description>An lightweight full body power armor that can be worn under coats. Its servos can slightly assist in wearer's movement.</description>
		<techLevel>Spacer</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>IA_SpecOpsEquipment</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ImperialSpecialArmor/ImperialSpecialArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<generateCommonality>2</generateCommonality>
		<tradeTags>
			<li>HiTechArmor</li>
			<li>Armor</li>
		</tradeTags>
		<statBases>
			<WorkToMake>21000</WorkToMake>
			<MaxHitPoints>220</MaxHitPoints>
			<Mass>12</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.78</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
			<ArmorRating_Heat>0.48</ArmorRating_Heat>
			<Insulation_Cold>12</Insulation_Cold>
			<Insulation_Heat>6</Insulation_Heat>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>30</Plasteel>
			<Synthread>45</Synthread>
		</costList>
		<equippedStatOffsets>
			<MoveSpeed>0.4</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/ImperialSpecialArmor/ImperialSpecialArmor</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.9,0.9,0.9)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
			</options>
		</colorGenerator>
		<comps>
			<li Class="CompProperties_Biocodable"/>
		</comps>
		<thingSetMakerTags>
			<li>RewardStandardHighFreq</li>
		</thingSetMakerTags>
	</ThingDef>

	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>Apparel_IA_NightVisionGoogles</defName>
		<label>special operation mask</label>
		<description>An head accessory with infrared imaging equipments, helps wearer see in the dark. Imperial officers recommended attaching a mask that conceals the identity of wearer.\n\nEffects of darkness on wearer (mood, movespeed etc.) will be nullified. Beauty of wearer will be zero.</description>
		<techLevel>Spacer</techLevel>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ImperialHalfMask/ImperialHalfMask</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.15</uiIconScale>
		<statBases>
			<WorkToMake>9000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>1</Mass>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>10</Plasteel>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<renderSkipFlags>
				<li>None</li>
			</renderSkipFlags>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/ImperialHalfMask/ImperialHalfMask</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.9,0.9,0.9)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
			</options>
		</colorGenerator>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>IA_SpecOpsEquipment</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<tradeTags>
			<li>Armor</li>
		</tradeTags>
	</ThingDef>
</Defs>