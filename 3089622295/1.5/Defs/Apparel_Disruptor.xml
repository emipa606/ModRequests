<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="IA_ArmorBase" >
		<defName>Apparel_IA_DisruptorArmor</defName>
		<label>disruptor armor</label>
		<thingClass>ImperialArsenal.Apparel_Rocket</thingClass>
		<description>An advanced chestplate designed to tackle the increasingly popular auto turret and mechanoid threats. A pair of rocket launchers is mounted on the back for extra fire power.</description>
		<recipeMaker>
			<researchPrerequisite>IA_DisruptorEquipment</researchPrerequisite>
			<skillRequirements>
				<Crafting>9</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ImperialDisruptor/IA_Disruptor_Male_south</texPath>
		</graphicData>
		<statBases>
			<WorkToMake>60000</WorkToMake>
			<MaxHitPoints>170</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.92</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.40</ArmorRating_Blunt>
			<ArmorRating_Heat>0.54</ArmorRating_Heat>
			<Insulation_Cold>14</Insulation_Cold>
			<Insulation_Heat>7</Insulation_Heat>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<costList>
			<ComponentSpacer>4</ComponentSpacer>
			<Plasteel>50</Plasteel>
			<Synthread>75</Synthread>
			<Shell_HighExplosive>2</Shell_HighExplosive>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/ImperialDisruptor/IA_Disruptor</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
		</apparel>
		<verbs>
			<li>
				<label>launch rocket</label>
				<verbClass>Verb_LaunchProjectileStatic</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<onlyManualCast>True</onlyManualCast>
				<range>29.9</range>
				<forcedMissRadius>3.9</forcedMissRadius>
				<warmupTime>1.5</warmupTime>
				<noiseRadius>4</noiseRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>RocketswarmLauncher_Fire</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>14</muzzleFlashScale>
				<drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>Proj_Rocket</defaultProjectile>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
		</verbs>
		<comps>
			<li Class="CompProperties_ApparelReloadable">
				<maxCharges>2</maxCharges>
				<ammoDef>Shell_HighExplosive</ammoDef>
				<ammoCountPerCharge>1</ammoCountPerCharge>
				<baseReloadTicks>60</baseReloadTicks>
				<soundReload>Standard_Reload</soundReload>
				<hotKey>Misc4</hotKey>
				<chargeNoun>grenade</chargeNoun>
				<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>IA_Bullet_EMP</defName>
		<label>EMP bolt</label>
		<graphicData>
			<texPath>Things/Projectile/LauncherShot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
			<color>(68,150,215)</color>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
			<speed>40</speed>
			<damageDef>EMP</damageDef>
			<!-- Use default damage from explosion def -->
			<explosionRadius>2.9</explosionRadius>
			<ai_IsIncendiary>true</ai_IsIncendiary>
			<arcHeightFactor>0.2</arcHeightFactor>
			<shadowSize>0.6</shadowSize>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="ApparelArmorHelmetPowerBase">
		<defName>Apparel_IA_DisruptorHelmet</defName>
		<label>disruptor helmet</label>
		<description>An advanced chestplate designed to tackle the increasingly popular auto turret and mechanoid threats. The EMP projector can disable electronics around target.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ImperialDisruptor/IA_DisruptorHelmet_south</texPath>
		</graphicData>
		<statBases>
			<ArmorRating_Sharp>1.06</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
			<ArmorRating_Heat>0.54</ArmorRating_Heat>
			<WorkToMake>21000</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<costList>
			<ComponentSpacer>2</ComponentSpacer>
			<Plasteel>40</Plasteel>
			<Shell_EMP>2</Shell_EMP>
		</costList>
		<apparel>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/ImperialDisruptor/IA_DisruptorHelmet</wornGraphicPath>
		</apparel>
		<tradeTags>
			<li>Armor</li>
		</tradeTags>
		<recipeMaker>
			<researchPrerequisite>IA_DisruptorEquipment</researchPrerequisite>
			<skillRequirements>
				<Crafting>9</Crafting>
			</skillRequirements>
		</recipeMaker>
		<thingClass>ImperialArsenal.Apparel_EMP</thingClass>
		<verbs>
			<li>
				<label>launch EMP grenade</label>
				<verbClass>Verb_LaunchProjectileStatic</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<onlyManualCast>True</onlyManualCast>
				<range>27.9</range>
				<forcedMissRadius>1.9</forcedMissRadius>
				<warmupTime>1.5</warmupTime>
				<noiseRadius>4</noiseRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>Shot_IncendiaryLauncher</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>14</muzzleFlashScale>
				<drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>IA_Bullet_EMP</defaultProjectile>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
		</verbs>
		<comps>
			<li Class="CompProperties_ApparelReloadable">
				<maxCharges>2</maxCharges>
				<ammoDef>Shell_EMP</ammoDef>
				<ammoCountPerCharge>1</ammoCountPerCharge>
				<baseReloadTicks>60</baseReloadTicks>
				<soundReload>Standard_Reload</soundReload>
				<hotKey>Misc4</hotKey>
				<chargeNoun>grenade</chargeNoun>
				<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
			</li>
		</comps>
	</ThingDef>
</Defs>