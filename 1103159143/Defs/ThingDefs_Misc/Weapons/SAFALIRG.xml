<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseBullet">
    <defName>SAFALIRG_Round</defName>
    <label>SAFALIRG bullet</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>25</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>


  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>SAFALIRG</defName>
    <label>SAFALIRG</label>
    <description>A rifle that uses Adamantium rounds.  It has very low impact (about the strength of a paintball), but is accurate at long distances and has a high rate of fire.  Likely ideal for teaching somebody how to shoot.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/SAFALIRG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <statBases>
      <Mass>5</Mass>
      <AccuracyTouch>1.00</AccuracyTouch>
      <AccuracyShort>0.95</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.85</AccuracyLong>
      <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
		<MoveSpeed>5</MoveSpeed>
		<GlobalLearningFactor>5</GlobalLearningFactor>
		<PsychicSensitivity>-0.9</PsychicSensitivity>
		<MentalBreakThreshold>0.5</MentalBreakThreshold>
		<WorkSpeedGlobal>5</WorkSpeedGlobal>
		<MiningSpeed>5</MiningSpeed>
		<ResearchSpeed>5</ResearchSpeed>
		<ConstructionSpeed>5</ConstructionSpeed>
		<PlantWorkSpeed>5</PlantWorkSpeed>
		<SmoothingSpeed>5</SmoothingSpeed>
		<FixBrokenDownBuildingSuccessChance>5</FixBrokenDownBuildingSuccessChance>
		<MedicalTendSpeed>5</MedicalTendSpeed>
		<MedicalTendQuality>5</MedicalTendQuality>
		<MedicalSurgerySuccessChance>5</MedicalSurgerySuccessChance>
		<SocialImpact>5</SocialImpact>
		<AnimalGatherSpeed>5</AnimalGatherSpeed>
		<TameAnimalChance>5</TameAnimalChance>
		<TrainAnimalChance>5</TrainAnimalChance>
		<AimingDelayFactor>-0.9</AimingDelayFactor>
		<MeleeHitChance>5</MeleeHitChance>
		<MeleeDodgeChance>5</MeleeDodgeChance>
		<ImmunityGainSpeed>5</ImmunityGainSpeed>
		<ResearchSpeedFactor>5</ResearchSpeedFactor>
		<MedicalTendQualityOffset>5</MedicalTendQualityOffset>
		<WorkTableWorkSpeedFactor>5</WorkTableWorkSpeedFactor>
		<SurgerySuccessChanceFactor>5</SurgerySuccessChanceFactor>
		<TradePriceImprovement>5</TradePriceImprovement>
		<CarryingCapacity>+75</CarryingCapacity>
		<PawnBeauty>+2</PawnBeauty>
    </equippedStatOffsets>
    <costList>
		<Steel>1</Steel>
		<ComponentIndustrial>5</ComponentIndustrial>
	</costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>SAFALIRG_Round</defaultProjectile>
        <warmupTime>0.1</warmupTime>
        <range>60</range>
		    <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>0.1</ticksBetweenBurstShots>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
	</verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  
</Defs>