<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Food crops ==============================-->

  <ThingDef ParentName="PlantBase">
    <defName>Plant_Wheatstraw</defName>
    <label>wheatstraw</label>
    <description>A mixture of nutrient-rich grasses which yield large amounts of wheatstraw. Raw Wheatstraw is edible for animals, but not humans.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Wheatstraw</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
	<immatureGraphicPath>Things/Plant/Immature/Wheatstraw_Immature</immatureGraphicPath>
      <fertilitySensitivity>0.1</fertilitySensitivity>
      <growDays>7</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <maxMeshCount>4</maxMeshCount>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Super_Wheatstraw</harvestedThingDef>
      <harvestYield>18</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~0.8</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Food</purpose>
      <fertilityMin>0.25</fertilityMin>
    </plant>
  </ThingDef>
  
   <ThingDef ParentName="PlantBase">
    <defName>Plant_Super_Greenfruit</defName>
    <label>greenfruit plants</label>
    <description>A highly nutritious fruit, albeit not actually very green. Greenfruit benefits greatly from richer soil, and are a crucial ingredient for the Food Cube.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Greenfruit</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
	  <immatureGraphicPath>Things/Plant/Immature/Greenfruit_Immature</immatureGraphicPath>
      <fertilitySensitivity>1.1</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawGreenfruit</harvestedThingDef>
      <harvestYield>8</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>6.5</growDays>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
      <humanFoodPlant>true</humanFoodPlant>
    </plant>
  </ThingDef>
  
   <ThingDef ParentName="PlantBase">
    <defName>Plant_Super_PricklyPear</defName>
    <label>prickly pear cactus plants</label>
    <description>A highly nutritious plant, able to be grown just about anywhere, but does not benefit from greater soil quality.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
