<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TerrainDef ParentName="FloorBase">
    <defName>TilledSand</defName>
    <label>tilled sand</label>
    <description>method of preparing sand to grow in a very limited capacity.</description>
    <texturePath>Terrain/Surfaces/tilledsand</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>320</renderPrecedence>
    <pathCost>2</pathCost>
    <filthAcceptanceMask>
      <li>Unnatural</li>
    </filthAcceptanceMask>
	<statBases>
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
      <WorkToBuild>400</WorkToBuild>
    </statBases>
    <fertility>0.25</fertility>
	<affordances>
      <li>Light</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
    <generatedFilth>Filth_Sand</generatedFilth>
	<takeFootprints>True</takeFootprints>
    <tools>
      <li>
        <label>sand</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>SandInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
    <designationHotKey>Misc6</designationHotKey>
	<tags>
      <li>Soil</li>
    </tags>
  </TerrainDef>

</Defs>