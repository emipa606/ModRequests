<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Gas Traps And Shells</li>
			<li>[WPN] Gas Traps And Shells</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_GasToxic"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_GasRage"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_GasTear"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_GasSleep"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_GasFear"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_GasAcid"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_MechVirus"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_GasAntiBug"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
			</operations>
		</match>
	</Operation>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Chemshine Mortar Shells</li>
			<li>[WPN] Gas Traps Chemshine</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "Shell_GasChemshine"]/graphicData/graphicClass</xpath>
					<value><graphicClass>Graphic_StackCount</graphicClass></value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>