  <!-- enter exit -->
  <SoundDef>
    <defName>BA_EinheitsPKW_Enter</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>BA_PKW_doorClose</clipPath>
          </li>
        </grains>
        <volumeRange>40~40</volumeRange>
      </li>
    </subSounds>
  </SoundDef>

