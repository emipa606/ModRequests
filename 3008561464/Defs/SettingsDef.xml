<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<XmlExtensions.SettingsMenuDef>
		<defName>VPETreeOptions</defName>
		<modId>VanillaExpanded.VPlantsE.TreeFix</modId>  
		<label>Vanilla Plants Expanded Tree Fix</label>   
		<settings>
			<li Class="XmlExtensions.Setting.SplitColumn">
				<leftCol>
					<li Class="XmlExtensions.Setting.Text">
						<text>Restart the game to apply changes.</text>
						<tKey>reminder</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor"/>
					<!--Settings here-->
				</leftCol>
				<rightCol>
					<li Class="XmlExtensions.Setting.ResetSettings"/>
					<!--Settings here-->
				</rightCol>
			</li>
			
			<li Class="XmlExtensions.Setting.Slider">
				<key>harvestAfterGrowthSetting</key>
				<label>Growth after Harvest value: {harvestAfterGrowthSetting} (Default value in Vanilla Plants Expanded is 0.2)</label>
				<defaultValue>0.8</defaultValue>
				<min>0.01</min>
				<max>0.98</max>
				<decimals>2</decimals>
			</li>
			<li Class="XmlExtensions.Setting.Slider">
				<key>harvestYieldSetting</key>
				<label>Harvest Yield Multiplyer: {harvestYieldSetting}</label>
				<defaultValue>1</defaultValue>
				<min>0.1</min>
				<max>2</max>
				<decimals>1</decimals>
			</li>
		</settings>			
	</XmlExtensions.SettingsMenuDef>
</Defs>