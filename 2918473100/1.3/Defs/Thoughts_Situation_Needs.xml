<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThoughtDef>
    <defName>NeedFoodVariety</defName>
    <workerClass>VarietyMatters.ThoughtWorker_FoodVariety</workerClass>
    <stages>
      <li>
        <label>empty menu</label>
        <description>I can't eat it again, I just can't. Please, give me anything else.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
      <li>
        <label>awful menu</label>
        <description>The same food again. Sometimes I think bugs would taste better.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
      <li>
        <label>sparse menu</label>
        <description>The food here keeps you alive, but there's not enough variety.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
      <li>
        <label>simple menu</label>
        <description>We have just enough variety to keep meals interesting.</description>
        <baseMoodEffect>0</baseMoodEffect>
      </li>
      <li>
        <label>fine menu</label>
        <description>We have so many foods, sometimes I can't decide what to eat.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>lavish menu</label>
        <description>Meals here are fascinating. It's like living in a restaurant!</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
      <li>
        <label>gourment menu</label>
        <description>Variety is the spice of life, and my food is spicy!</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
