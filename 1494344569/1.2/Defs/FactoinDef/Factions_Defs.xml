<Defs>

    <FactionDef>
	    <defName>pataponTribe</defName>
	    <label>Patapon Tribe</label>
        <fixedName>Earthend</fixedName>
        <description>The patapons were safe no more Bonedeths,Karmen,and Akumapon to attack there there villages, their homes. Now safe patapons decided to explore new lands via portables but what they didnt realise that once in there was no going back</description>
        <pawnSingular>patapon</pawnSingular>
        <pawnsPlural>patapons</pawnsPlural>
        <settlementGenerationWeight>2</settlementGenerationWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <factionIconPath>World/Faction/ExspandingBase/FactionBase</factionIconPath>
        <colorSpectrum>
        </colorSpectrum>
        <geneticVariance>0.1</geneticVariance>
        <factionNameMaker>NamerFactionTribal</factionNameMaker>
	    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
        <pawnNameMaker>NamerPersonTribal</pawnNameMaker>
        <techLevel>Neolithic</techLevel>
        <goodwillDailyGain>0.25</goodwillDailyGain>
        <goodwillDailyFall>0.25</goodwillDailyFall>
        <leaderTitle>Chief</leaderTitle>
        <backstoryFilters>
            <li>
                <categories>
                    <li>Tribal</li>
                </categories>
            </li>
        </backstoryFilters>
        <hairTags>
			<li>pataponhair</li>
		</hairTags>
        <naturalColonyGoodwill>
            <min>-15</min>
            <max>70</max>
        </naturalColonyGoodwill>
        <caravanTraderKinds>
            <li>Caravan_Patapon_BulkGoods</li>
            <li>Caravan_Patapon_WepondCollector</li>
            <li>Caravan_Patapon_Slaver</li>
            <li>Caravan_Patapon_ExoticGoods</li>
        </caravanTraderKinds>
        <visitorTraderKinds>
            <li>Visitor_Patapon_Standard</li>
        </visitorTraderKinds>
        <baseTraderKinds>
            <li>Base_Patapon_Standard</li>
        </baseTraderKinds>
        <allowedArrivalTemperatureRange>
            <min>-30</min>
            <max>30</max>
        </allowedArrivalTemperatureRange>
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,35)</li>
                <li>(70, 50)</li>
                <li>(800, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>
        <startingGoodwill>
            <min>0</min>
            <max>40</max>
        </startingGoodwill>
        <pawnGroupMakers>
            <li>
                <!-- Normal fights, ranged with melee mix-ins -->
                <kindDef>Combat</kindDef>
                <commonality>100</commonality>
                <options>
                    <Patapon_Warrior>5</Patapon_Warrior>
                    <Patapon_Bowmen>10</Patapon_Bowmen>
                    <Patapon_Archer>10</Patapon_Archer>
                    <Patapon_Raider>5</Patapon_Raider>
                    <Patapon_ChiefRanged>3</Patapon_ChiefRanged>
                    <Patapon_ChiefMelee>1.5</Patapon_ChiefMelee>
                </options>  
            </li>
            <li>
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <Patapon_Bowmen>10</Patapon_Bowmen>
                    <Patapon_Archer>10</Patapon_Archer>
                    <Patapon_ChiefRanged>5</Patapon_ChiefRanged>
                </options>
            </li>
            <li>
                <kindDef>Peaceful</kindDef>
                <options>
                    <Patapon_Warrior>5</Patapon_Warrior>
                    <Patapon_Bowmen>10</Patapon_Bowmen>
                    <Patapon_Archer>10</Patapon_Archer>
                    <Patapon_Raider>5</Patapon_Raider>
                    <Patapon_ChiefRanged>3</Patapon_ChiefRanged>
                    <Patapon_ChiefMelee>1.5</Patapon_ChiefMelee>
                </options>
            </li>
            <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <Patapon_Trader>1</Patapon_Trader>
                </traders>
                <carriers>
                    <Muffalo>6</Muffalo>
                    <Dromedary>5</Dromedary>
                    <Alpaca>2.5</Alpaca>
                    <Elephant>2</Elephant>
                </carriers>
                <guards>
                    <Patapon_Warrior>7</Patapon_Warrior>
                    <Patapon_Bowmen>10</Patapon_Bowmen>
                    <Patapon_Archer>10</Patapon_Archer>
                    <Patapon_Raider>7</Patapon_Raider>
                </guards>
            </li>
            <li>
                <kindDef>Combat</kindDef>
                <options>
                    <Patapon_Warrior>7</Patapon_Warrior>
                    <Patapon_Bowmen>10</Patapon_Bowmen>
                    <Patapon_Archer>10</Patapon_Archer>
                    <Patapon_Raider>7</Patapon_Raider>
                    <Patapon_ChiefRanged>10</Patapon_ChiefRanged>
                </options>
            </li>
        </pawnGroupMakers>
        <settlementTexturePath>World/Faction/Base/TribalFactionBase</settlementTexturePath>
    </FactionDef>


