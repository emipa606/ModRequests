<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ================================== Helmets ====================================-->

<ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_ShrimpHelmet</defName>
    <label>shrimp helmet</label>
    <description>An ancient style of headware commonly used in fields to block the sun or rain, commonly worn by farmers or anyone in the sun for long. Moderately effective against slashing and blunt attacks.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/Pawn/ShrimpHelmet/Shrimp_Helmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <stuffCategories>
      <li>Metallic</li>
	  <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
	<costList>
		<Steel>5</Steel>
	</costList>
    <statBases>
      <WorkToMake>2500</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.6</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <SocialImpact>0.1</SocialImpact>
	  <PlantWorkSpeed>0.1</PlantWorkSpeed>
    </equippedStatOffsets>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/ShrimpHelmet/Shrimp_Helmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
</Defs>