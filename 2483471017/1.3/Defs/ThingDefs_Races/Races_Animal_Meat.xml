<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- =========================== Meat ================================= -->

  <ThingDef ParentName="AnimalThingBase">
    <defName>Meat</defName>
    <label>meat</label>
    <description>The "Lumbricus Praegrandis" (or Meat for short) is the largest species of earthworm. Meat is often raised for its succulent flesh and the milklike solution that it produces. Meat taming is difficult, but you will sleep well at night knowing that you saved it from all that would destroy the meat.</description>
    <statBases>
      <MoveSpeed>3.2</MoveSpeed>
      <ComfyTemperatureMin>-20</ComfyTemperatureMin>
	  <ComfyTemperatureMax>70</ComfyTemperatureMax>
      <MarketValue>500</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>10</milkAmount>
		<milkFemaleOnly>false</milkFemaleOnly>
      </li>
    </comps>
    <tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
        <chanceFactor>0.8</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>Snake</body>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>1</baseBodySize>
      <baseHungerRate>0.6</baseHungerRate>
      <baseHealthScale>1</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Meat</leatherDef>
      <wildness>0.2</wildness>
      <trainability>Advanced</trainability>
      <meatLabel>meat meat</meatLabel>
      <gestationPeriodDays>20</gestationPeriodDays>
      <lifeExpectancy>22</lifeExpectancy>
      <manhunterOnDamageChance>.10</manhunterOnDamageChance>
      <manhunterOnTameFailChance>.10</manhunterOnTameFailChance>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.3</minAge>
          <soundWounded>Pawn_Meat_Wounded</soundWounded>
          <soundDeath>Pawn_Meat_Death</soundDeath>
          <soundCall>Pawn_Meat_Call</soundCall>
          <soundAngry>Pawn_Meat_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
	  <wildBiomes>
        <TropicalRainforest>0.2</TropicalRainforest>
		<TropicalSwamp>0.2</TropicalSwamp>
		<AridShrubland>0.2</AridShrubland>
        <Desert>0.2</Desert>
		<ExtremeDesert>0</ExtremeDesert>
		<TemperateForest>0.2</TemperateForest>
		<TemperateSwamp>0.2</TemperateSwamp>
		<BorealForest>0.2</BorealForest>
		<Tundra>0</Tundra>
		<ColdBog>0</ColdBog>
		<IceSheet>0</IceSheet>
		<SeaIce>0</SeaIce>
      </wildBiomes>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
      <li>AnimalFarm</li>
    </tradeTags>
  </ThingDef>

