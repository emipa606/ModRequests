<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Why is this redundant mod check here? Isn't this the mod this patch belongs to? -->
  <!-- Yes my dear friend, this is so users of the framework can quickly copy-paste this patch -->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[SYR] Trait Value</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- Vanilla Spectrum Traits -->
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "SpeedOffset"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-1, -10</li>
                <li>1, 10</li>
                <li>2, 30</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "DrugDesire"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-1, -10</li>
                <li>1, -20</li>
                <li>2, -30</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "NaturalMood"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-2, -30</li>
                <li>-1, -10</li>
                <li>1, 10</li>
                <li>2, 20</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "Nerves"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-2, -30</li>
                <li>-1, -10</li>
                <li>1, 10</li>
                <li>2, 30</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "Neurotic"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>1, 10</li>
                <li>2, 10</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "Industriousness"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-2, -20</li>
                <li>-1, -10</li>
                <li>1, 10</li>
                <li>2, 20</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "PsychicSensitivity"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-2, 10</li>
                <li>-1, 0</li>
                <li>1, 0</li>
                <li>2, 10</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "ShootingAccuracy"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-1, 10</li>
                <li>1, 10</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "Beauty"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-2, -30</li>
                <li>-1, -20</li>
                <li>1, 20</li>
                <li>2, 30</li>
              </traitValues>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName = "Immunity"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-1, -20</li>
                <li>1, 20</li>
              </traitValues>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>



</Patch>