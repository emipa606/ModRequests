<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="Entity_BASE">
    <defName>Entity-096_Race</defName>
    <label>Entity-096</label>
    <description>A humanoid creature of unknown origin, subject shows very little muscle mass, arms are grossly out of proportion with the rest of the subject's body. The subject shows signs of extreme emotional distress when anyone views its face, and will attempt to kill anyone who does so.</description>
    <comps>
      <li Class="Entity_096_Version4.CompProperties_Entity_096">
	    <lineOfSightRadius>28</lineOfSightRadius> <!-- EDIT this number to - / + its radius in tiles for it to enrage -->
      </li>
	  <li Class="AnimalBehaviours.CompProperties_HediffEffecter">
		<radius>6</radius>
		<severity>1</severity>
		<tickInterval>100</tickInterval>
		<hediff>Hediff_Desperation_Entity096</hediff>
	  </li>
	  <li Class="AnimalBehaviours.CompProperties_DiseaseImmunity">
		<hediffsToRemove>
			<li>Heartattack</li>
			<li>Blood_Loss</li>
			<li>Frail</li>
			<li>Cataract</li>
			<li>Blindness</li>
			<li>Hearing_Loss</li>
			<li>Dementia</li>
			<li>Alzheimer's</li>
			<li>Asthma</li>
			<li>Carcinoma</li>
		</hediffsToRemove>
		<tickInterval>60</tickInterval>
	  </li>
	  <li Class="AnimalBehaviours.CompProperties_DoesntFlee"> </li>
	  
	  <li Class="CompProperties_HoldingPlatformTarget">
        <baseEscapeIntervalMtbDays>60</baseEscapeIntervalMtbDays>
        <lookForTargetOnEscape>false</lookForTargetOnEscape>
      </li>
	  <li Class="CompProperties_AttachPoints">
        <points>
          <li>
            <offset>(-.35, 0, .35)</offset>
            <type>PlatformRestraint0</type>
          </li>
          <li>
            <offset>(.35, 0, .35)</offset>
            <type>PlatformRestraint1</type>
          </li>
          <li>
            <offset>(.2, 0, -.71)</offset>
            <type>PlatformRestraint2</type>
          </li>
          <li>
            <offset>(-.2, 0, -.71)</offset>
            <type>PlatformRestraint3</type>
          </li>
        </points>
      </li>
      <li Class="CompProperties_ProducesBioferrite">
        <bioferriteDensity>1</bioferriteDensity>
      </li>
      <li Class="CompProperties_Studiable">
        <frequencyTicks>120000</frequencyTicks>
        <knowledgeCategory>Advanced</knowledgeCategory>
        <anomalyKnowledge>3</anomalyKnowledge>
        <minMonolithLevelForStudy>1</minMonolithLevelForStudy>
        <requiresHoldingPlatform>true</requiresHoldingPlatform>
      </li>
    </comps>
	
    <statBases>
	  <MoveSpeed>16.6</MoveSpeed>
	  <MarketValue>10000</MarketValue>
	  <ComfyTemperatureMin>-50</ComfyTemperatureMin>
	  <ComfyTemperatureMax>350</ComfyTemperatureMax>
	  <MinimumContainmentStrength>120</MinimumContainmentStrength>
	  <FilthRate>10</FilthRate>
	  <MeatAmount>200</MeatAmount>
	  <LeatherAmount>80</LeatherAmount>
	</statBases>
	

	
    <race>
	  <thinkTreeMain>Animal</thinkTreeMain>
	  <needsRest>false</needsRest>
      <body>Entity_096_Body</body>
	  <predator>true</predator>
      <foodType>CarnivoreAnimalStrict</foodType>
      <baseHealthScale>14</baseHealthScale> <!-- EDIT this number to decrease its health pool -->
      <baseBodySize>2</baseBodySize>
	  <leatherDef>Leather_Human</leatherDef>
	  <soundEating>PredatorLarge_Eat</soundEating>
      <soundCallIntervalRange>
        <min>30</min>
        <max>60</max>
      </soundCallIntervalRange>
      <wildness>10</wildness>
      <trainability>None</trainability>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <manhunterOnTameFailChance>1</manhunterOnTameFailChance>
	  <gestationPeriodDays>20</gestationPeriodDays>
      <lifeExpectancy>1000</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.2</minAge>
        </li>
      </lifeStageAges>
	  <soundMeleeHitPawn>Pawn_Melee_Slash_HitsPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitsBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Misses</soundMeleeMiss>
      <wildBiomes>
		 <AridShrubland>0</AridShrubland>
	     <Desert>0</Desert>
		 <ExtremeDesert>0</ExtremeDesert>
	     <BorealForest>0</BorealForest>
		 <ColdBog>0.1</ColdBog>
		 <Tundra>0</Tundra>
		 <IceSheet>0.02</IceSheet>
		 <SeaIce>0.03</SeaIce>
		 <TemperateForest>0</TemperateForest>
		 <TemperateSwamp>0</TemperateSwamp>
		 <TropicalRainforest>0</TropicalRainforest>
	  </wildBiomes>
	  <alwaysViolent>true</alwaysViolent>
    </race>
	<tools>
	<li>
	  <label>Teeth</label>
	  <capacities>
          <li>Bite</li>
        </capacities>
        <power>224</power>
        <cooldownTime>1</cooldownTime>
	  </li>
	  <li>
	    <label>claws</label>
        <capacities>
          <li>Tear</li>
		  <li>Stab</li>
        </capacities>
        <power>224</power>
        <cooldownTime>2</cooldownTime>
	  </li>
	</tools>
  </ThingDef>
  
