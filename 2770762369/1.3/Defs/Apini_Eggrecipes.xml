<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
      <defName>CreateApiniqueenegg</defName>
      <label>Create Apini queen egg</label>
      <description>Create an egg of Apini queen/drone</description>
      <jobString>Making Apini Spawner egg</jobString>  
      <allowMixingIngredients>false</allowMixingIngredients>
	  <skillRequirements>
		<Crafting>4</Crafting>
      </skillRequirements>
      <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>ApiniHoney</li>
				</thingDefs>
			</filter>
			<count>200</count>
		</li>
	  </ingredients>
      <products>
         <ApiniFarming_QEgg>1</ApiniFarming_QEgg>
      </products>
      <workAmount>1000</workAmount>
      <workSkill>Crafting</workSkill>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workSpeedStat>ButcheryMechanoidSpeed</workSpeedStat>
	<recipeUsers>
		<li>CraftingSpot</li>
     </recipeUsers>
	</RecipeDef>
</Defs>