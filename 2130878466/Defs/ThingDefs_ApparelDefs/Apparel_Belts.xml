<Defs>
  <!--============== Backpacks =================-->
  <!-- Civilian -->
  
  <!-- Assault pack -->
  
    <ThingDef ParentName="RHApparelMakeableBase_RHFactions">
    <defName>RNApparel_Backpack_Tactical_SURPAT</defName>
    <label>asssault pack SURPAT</label>
    <description>An assault pack for carrying equipment. Adds up to 40kg of carrying capacity for the user; Has SURPAT camo.</description>
    <graphicData>
      <texPath>Things/Apparel/Display/SURPAT_AssaultBackpack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>70</costStuffCount>
	 <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
	  	  <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	<generateCommonality>0.4</generateCommonality>
    <thingCategories>
      <li>RHApparel_Belts</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>1.0</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <CarryingCapacity>40</CarryingCapacity> <!-- Oh my days I warned you, turn back- BEFORE IT'S TOO LATE! -->
	  <MoveSpeed>-0.08</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
	  <careIfWornByCorpse>false</careIfWornByCorpse>
      <wornGraphicPath>Things/Apparel/Belt/SURPAT_AssaultBackpack</wornGraphicPath>
<wornGraphicData>
  <renderUtilityAsPack>false</renderUtilityAsPack>
</wornGraphicData>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>RH_Belts_Allegiance</li>
	  </tags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
		 <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(64, 78, 44)</only>
        </li>
		<li>
          <weight>10</weight>
          <only>(61, 61, 61)</only>
        </li>
		<li>
          <weight>5</weight>
          <only>(99, 99, 99)</only>
        </li>		
		<li>
          <weight>5</weight>
          <only>(204, 172, 92)</only>
        </li>		
		<li>
          <weight>5</weight>
          <only>(122, 112, 82)</only>
        </li>
		<li>
          <weight>5</weight>
          <only>(99, 99, 99)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  

  <!-- ALICE -->

  <ThingDef ParentName="RHApparelMakeableBase_RHFactions">
    <defName>RNApparel_AssaultVest_SSO</defName>
    <label>assault vest SSO</label>
    <description>A famous Russian unloading system from the trusted manufacturer SSO/SPOSN, who have produced equipment proven in real combat.

Smersh Vest has been used by FSB and GRU units. The modular system is designed to transport equipment for long periods of time.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <graphicData>
      <texPath>Things/Apparel/Display/SSOHarness</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
	  <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>1200</WorkToMake>
      <Mass>1.5</Mass>
	  <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	
	<equippedStatOffsets>
	  <AimingDelayFactor>-0.10</AimingDelayFactor>
	  <CarryingCapacity>20</CarryingCapacity>
	  <MedicalTendSpeed>0.10</MedicalTendSpeed>
	</equippedStatOffsets>
	
    <thingCategories>
      <li>RHApparel_Belts</li>
    </thingCategories>
		<!--<generateAllowChance>0.15</generateAllowChance>-->
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
