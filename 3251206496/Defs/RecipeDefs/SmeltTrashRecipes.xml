<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>SmeltTrashBagSteel_ElectricSmelter</defName>
    <label>Reclaim steel</label>
    <description>Use heat and strong electromagnets to extract tiny amounts of steel from accumulated trash.</description>
    <jobString>Burning trash.</jobString>
    <workAmount>500</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>VRecyclingE_Trash</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <Steel>5</Steel>
    </products>
	<recipeUsers>
		<li>ElectricSmelter</li> 
	</recipeUsers>
  </RecipeDef>
  
  <RecipeDef>
    <defName>SmeltTrashBagSteel_Campfire</defName>
    <label>Reclaim steel</label>
    <description>Use heat to slowly extract tiny amounts of steel from accumulated trash.</description>
    <jobString>Burning trash.</jobString>
    <workAmount>1000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>VRecyclingE_Trash</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <Steel>5</Steel>
    </products>
	<recipeUsers>
		<li>Campfire</li> 
	</recipeUsers>
  </RecipeDef>
  
  </Defs>