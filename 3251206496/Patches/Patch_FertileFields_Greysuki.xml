<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Fertile Fields 1.5</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
  
						<RecipeDef>
							<defName>ProcessBiopacks_TableStonecutter</defName>
							<label>Process biopacks</label>
							<description>Cut open Reclaimed Biopacks and dry out the contents, converting them into more stable fertilizer.</description>
							<jobString>Processing reclaimed biopacks.</jobString>
							<workAmount>500</workAmount>
							<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
							<effectWorking>ButcherFlesh</effectWorking>
							<soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>VRecyclingE_ReclaimedBiopack</li>
										</thingDefs>
									</filter>
									<count>5</count>
								</li>
							</ingredients>
							<products>
								<Fertilizer>1</Fertilizer>
							</products>
							<recipeUsers>
								<li>TableStonecutter</li> 
							</recipeUsers>
						</RecipeDef>
  
						<RecipeDef>
							<defName>ProcessBiopacks_CraftingSpot</defName>
							<label>Process biopacks</label>
							<description>Cut open Reclaimed Biopacks and dry out the contents, converting them into more stable fertilizer.</description>
							<jobString>Processing reclaimed biopacks.</jobString>
							<workAmount>1000</workAmount>
							<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
							<effectWorking>ButcherFlesh</effectWorking>
							<soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>VRecyclingE_ReclaimedBiopack</li>
										</thingDefs>
									</filter>
									<count>5</count>
								</li>
							</ingredients>
							<products>
								<Fertilizer>1</Fertilizer>
							</products>
							<recipeUsers>
								<li>CraftingSpot</li> 
							</recipeUsers>
						</RecipeDef>
  
  					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>