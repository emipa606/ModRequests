<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medieval Overhaul</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>	
	
				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="SmeltTrashBagSteel_ElectricSmelter"]/label</xpath>
						<value>
							<label>Reclaim Iron</label>
						</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="SmeltTrashBagSteel_ElectricSmelter"]/description</xpath>
						<value>
							<description>Use heat to extract tiny amounts of iron ore from accumulated trash.</description>
						</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="SmeltTrashBagSteel_ElectricSmelter"]/products</xpath>
						<value>
							<products>
								<DankPyon_IronOre>5</DankPyon_IronOre>
							</products>
						</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="SmeltTrashBagSteel_Campfire"]/label</xpath>
						<value>
							<label>Reclaim Iron</label>
						</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="SmeltTrashBagSteel_Campfire"]/description</xpath>
						<value>
							<description>Use heat to extract tiny amounts of iron ore from accumulated trash.</description>
						</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="SmeltTrashBagSteel_Campfire"]/products</xpath>
						<value>
							<products>
								<DankPyon_IronOre>5</DankPyon_IronOre>
							</products>
						</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="SmeltTrashBagSteel_ElectricSmelter"]/recipeUsers</xpath>
						<value>
							<li>DankPyon_Furnace</li>
						</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>