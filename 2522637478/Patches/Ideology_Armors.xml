<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ideology</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

<!-- ============================================= Remove the pointless ColorGenerator script
                                                   this'll make the armors take on the color of the material -->
													<!--@Name="" or -->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Apparel_Headwrap" or 
                                          defName="Apparel_Broadwrap" or 
                                          defName="Apparel_VisageMask" or 
                                          defName="Apparel_Slicecap" or 
                                          defName="Apparel_Collar" or 
                                          defName="Apparel_AuthorityCap" or 
                                          defName="Apparel_Tailcap" or 
                                          defName="Apparel_Shadecone" or 
                                          defName="Apparel_Flophat" or 
                                          defName="Apparel_BodyStrap" or 
                                          defName="Apparel_Burka" or 
                                          defName="Apparel_Robe" or 
                                          defName="Apparel_TortureCrown" or 
                                          defName="Apparel_Blindfold"]/colorGenerator</xpath>
                </li>
          	</operations>
		</match>
	</Operation>
</Patch>