<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName="TableMachining"]/recipes</xpath>
    <value>
        <li>MakeSimpleProstheticLeg</li>
         <li>MakeSimpleProstheticArm</li>
         <li>MakeSimpleProstheticHand</li>
         <li>MakeSimpleProstheticFoot</li>
         <li>MakeArtificialPelvis</li>
         <li>MakeArtificialNose</li>
         <li>MakeArtificialBone</li>
         <li>MakeCochlearImplant</li>
    </value>
</Operation>

<Operation Class="PatchOperationReplace">
	    <xpath>*/ThingDef[defName = "TableMachining"]/description</xpath>
	    <value>
<description>A work station for assembling machinery like guns and ammunition, or breaking down dead mechanoids. Can also be used to craft simple prosthetic parts and artificial bones.</description>
	    </value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
	    <xpath>*/ResearchProjectDef[defName = "Machining"]/description</xpath>
	    <value>
<description>Build machining tables to craft guns, grenades, flak armor, prosthetics, artificial bones, and to disassemble dead mechanoids for resources.</description>
	    </value>
	</Operation>

</Patch>
