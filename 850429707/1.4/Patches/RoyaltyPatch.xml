    <mods>
        <li>Royalty</li>
    </mods>
    <match Class="PatchOperationReplace">
        <xpath>*/ThingDef[defName = "Neurocalculator"]/graphicData/color</xpath>
        <value>
<color>(255,255,255)</color>
	    </value>
    </match>
</Operation>

