<?xml version="1.0" encoding="utf-8"?>
<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Royalty</li>
    </mods>
    <match Class="PatchOperationAdd">
        <xpath>*/HediffDef[defName = "PowerArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools/li</xpath>
        <value>
<soundMeleeHit>MeleeHit_BionicSlash</soundMeleeHit>
<soundMeleeMiss>MeleeMiss_BionicSlash</soundMeleeMiss>
	    </value>
    </match>
</Operation>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Royalty</li>
    </mods>
    <match Class="PatchOperationAdd">
        <xpath>*/HediffDef[defName = "AdvancedPowerArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools/li</xpath>
        <value>
<soundMeleeHit>MeleeHit_BionicSlash</soundMeleeHit>
<soundMeleeMiss>MeleeMiss_BionicSlash</soundMeleeMiss>
	    </value>
    </match>
</Operation>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Royalty</li>
    </mods>
    <match Class="PatchOperationSequence">
    <operations>
	    <li Class="PatchOperationAdd">
        <xpath>*/ThingDef[@Name = "BodyPartBionicImperialBase"]</xpath>
        <value>
<graphicData>
<graphicClass>Graphic_Single</graphicClass>
<texPath>Things/Item/Health/HealthItem</texPath>
<drawSize>0.80</drawSize>
<color>(255,255,255)</color>
</graphicData>
	    </value>
	    </li>
	    </operations>
	    </match>
</Operation> 

