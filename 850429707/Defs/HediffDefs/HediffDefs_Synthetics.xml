<?xml version="1.0" encoding="UTF-8"?>
<Defs>
   
   <HediffDef Name="addedPartSynthetic" Abstract="True">
      <hediffClass>Hediff_AddedPart</hediffClass>
      <isBad>false</isBad>
      <defaultLabelColor>(188,39,242)</defaultLabelColor>
      <initialSeverity>0.001</initialSeverity>
      <addedPartProps>
		<betterThanNatural>true</betterThanNatural>
      </addedPartProps>
   </HediffDef>

   <!-- Added body parts -->
   
    <HediffDef ParentName="ImplantHediffBase">
      <defName>Neurostimulator</defName>
      <label>neurostimulator</label>
      <spawnThingOnRemoved>Neurostimulator</spawnThingOnRemoved>
            <addedPartProps>
         <partEfficiency>1</partEfficiency>
         <solid>true</solid>
      </addedPartProps>
    <stages>
      <li>
        <opinionOfOthersFactor>0</opinionOfOthersFactor>
        <painOffset>0.10</painOffset>
        <capMods>
        <li>
            <capacity>Consciousness</capacity>
            <offset>0.10</offset>
          </li>
            <li>
               <capacity>Sight</capacity>
               <offset>0.15</offset>
            </li>
          <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
   </HediffDef>
   
   <HediffDef ParentName="ImplantHediffBase">
      <defName>Hyporegulator</defName>
      <label>hyporegulator</label>
      <spawnThingOnRemoved>Hyporegulator</spawnThingOnRemoved>
            <addedPartProps>
         <solid>true</solid>
      </addedPartProps>
    <stages>
      <li>
      <painFactor>0.4</painFactor>
      <restFallFactor>0.75</restFallFactor>
          <statOffsets>
          <MentalBreakThreshold>-0.15</MentalBreakThreshold>
          <ImmunityGainSpeed>0.10</ImmunityGainSpeed>
          <ComfyTemperatureMin>-15</ComfyTemperatureMin>
          <ComfyTemperatureMax>10</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
   </HediffDef>
   
   <HediffDef ParentName="ImplantHediffBase">
      <defName>Cortexaugmentor</defName>
      <label>cortexaugmentor</label>
      <spawnThingOnRemoved>Cortexaugmentor</spawnThingOnRemoved>
            <addedPartProps>
         <solid>true</solid>
      </addedPartProps>
    <stages>
    <li>
         <capMods>
            <li>
               <capacity>Consciousness</capacity>
               <offset>0.05</offset>
            </li>
         </capMods>
        <statOffsets>
          <GlobalLearningFactor>0.50</GlobalLearningFactor>
          <WorkSpeedGlobal>0.30</WorkSpeedGlobal>
          <NegotiationAbility>0.15</NegotiationAbility>
          <SocialImpact>0.15</SocialImpact>
          <MedicalSurgerySuccessChance>0.15</MedicalSurgerySuccessChance>
        </statOffsets>
        </li>
        </stages>
   </HediffDef>

   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticLung</defName>
      <label>synthetic lung</label>
      <spawnThingOnRemoved>SyntheticLung</spawnThingOnRemoved>
      <addedPartProps>
      <solid>true</solid>
         <partEfficiency>1</partEfficiency>
      </addedPartProps>
      <stages>
      <li>
				<capMods>
            <li>
               <capacity>Breathing</capacity>
               <offset>0.2</offset>
            </li>
            <li>
               <capacity>Moving</capacity>
               <offset>0.05</offset>
            </li>
         </capMods>
		</li>
      </stages>
   </HediffDef>
   
   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticLiver</defName>
      <label>synthetic liver</label>
      <spawnThingOnRemoved>SyntheticLiver</spawnThingOnRemoved>
      <addedPartProps>
         <solid>true</solid>
         <partEfficiency>1</partEfficiency>
      </addedPartProps>
      <stages>
		<li>
         <capMods>
            <li>
               <capacity>BloodFiltration</capacity>
               <offset>0.2</offset>
            </li>
         </capMods>
		</li>
      </stages>
   </HediffDef>
   
   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticKidney</defName>
      <label>synthetic kidney</label>
      <spawnThingOnRemoved>SyntheticKidney</spawnThingOnRemoved>
      <addedPartProps>
         <solid>true</solid>
         <partEfficiency>1</partEfficiency>
      </addedPartProps>
      <stages>
		<li>
         <capMods>
            <li>
               <capacity>BloodFiltration</capacity>
               <offset>0.2</offset>
            </li>
         </capMods>
		</li>
      </stages>
   </HediffDef>
   
   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticHeart</defName>
      <label>synthetic heart</label>
      <spawnThingOnRemoved>SyntheticHeart</spawnThingOnRemoved>
      <addedPartProps>
         <solid>true</solid>
         <partEfficiency>1</partEfficiency>
      </addedPartProps>
      <stages>
		<li>
		<capMods>
		<li>
               <capacity>BloodPumping</capacity>
               <offset>0.2</offset>
            </li>
            <li>
               <capacity>Moving</capacity>
               <offset>0.1</offset>
            </li>
            <li>
               <capacity>Manipulation</capacity>
               <offset>0.1</offset>
            </li>
            </capMods>
		</li>
		</stages>
   </HediffDef>
   
   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticStomach</defName>
      <label>synthetic stomach</label>
      <spawnThingOnRemoved>SyntheticStomach</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.25</partEfficiency>
    </addedPartProps>
   </HediffDef>
   
</Defs>