<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Door Curtains</li>
		</mods>
		<nomatch Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name = "LeatherBase"]/stuffProps/statFactors</xpath>
					<value>
						<DoorOpenSpeed>1.1</DoorOpenSpeed>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name = "WoolBase"]/stuffProps/statFactors</xpath>
					<value>
						<DoorOpenSpeed>1.05</DoorOpenSpeed>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Cloth"]/stuffProps/statFactors</xpath>
					<value>
						<DoorOpenSpeed>1.15</DoorOpenSpeed>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Synthread"]/stuffProps/statFactors</xpath>
					<value>
						<DoorOpenSpeed>1.45</DoorOpenSpeed>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "DevilstrandCloth"]/stuffProps/statFactors</xpath>
					<value>
						<DoorOpenSpeed>1.35</DoorOpenSpeed>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Hyperweave"]/stuffProps/statFactors</xpath>
					<value>
						<DoorOpenSpeed>1.55</DoorOpenSpeed>
					</value>
				</li>		
			</operations>
		</nomatch>
    </Operation>

	<Operation Class="PatchOperationReplace">
	  <xpath>Defs/ThingDef[defName = "AnimalFlap"]/statBases/WorkToBuild</xpath>
		<value>	
			<WorkToBuild>250</WorkToBuild>  
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
	  <xpath>Defs/ThingDef[defName = "AnimalFlap"]/statBases/MaxHitPoints</xpath>
		<value>	
			<MaxHitPoints>25</MaxHitPoints>  
		</value>
	</Operation>
  
</Patch>  