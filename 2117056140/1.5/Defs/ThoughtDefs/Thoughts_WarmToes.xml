<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <ThoughtDef>
    <defName>VBY_WarmToes</defName>
    <durationDays>0.0028</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>warm toes</label>
        <description>This carpet is so warm and soft on my toes.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>VBY_ExtraWarmToes</defName>
    <durationDays>0.0028</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>sublime soles</label>
        <description>This carpet is like walking on clouds.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>VBY_GrossToes</defName>
    <durationDays>0.0028</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>gross toes</label>
        <description>This surface has a strange texture. I feel uncomfortable.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
	<nullifyingTraits>
      <li>Bloodlust</li>
      <li>Cannibal</li>
      <li>Psychopath</li>
    </nullifyingTraits>
  </ThoughtDef>

	<ThoughtDef MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">	
	  <thoughtClass>VanillaCookingExpanded.Thought_Hediff</thoughtClass>
	  <hediff>VBY_AnimaWoolBuff</hediff>						  
	  <defName>VBY_ExtraWarmAnimaToes</defName>
	  <durationDays>0.0028</durationDays>
	  <stackLimit>1</stackLimit>
	  <stages>
		<li>
		  <label>psychic sublime soles</label>
		  <description>This carpet is like walking on clouds and I feel a rush of psychic energy.</description>
		  <baseMoodEffect>2</baseMoodEffect>
		</li>
	  </stages>
	</ThoughtDef>
	<HediffDef MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
		<defName>VBY_AnimaWoolBuff</defName>
		<label>anima wool aura</label>
		<makesSickThought>false</makesSickThought>
		<description>The anima wool carpet in this area is giving off psychic waves of energy.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>VBY_ExtraWarmAnimaToes</li>
				</thoughtDefs>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
			  <severityPerDay>-23.95</severityPerDay>
			  <showHoursToRecover>false</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>   
			  <statOffsets>										
				<PsychicSensitivityOffset>0.03</PsychicSensitivityOffset>
				<PsychicEntropyRecoveryRate>0.01</PsychicEntropyRecoveryRate>
			  </statOffsets>
			</li>
		</stages>
	</HediffDef>

</Defs>  