<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!--
	<StuffAppearanceDef>
		<defName>VBYHide</defName>
    </StuffAppearanceDef>
-->
  <ThingDef ParentName="DoorBase" Name="VBY_Hide_DoorBase" Abstract="True">
    <stuffCategories Inherit="false">
      <li>Leathery</li>
	  <li>Fabric</li>	  
    </stuffCategories>
    <statBases>
	  <Beauty>0.5</Beauty>
    </statBases>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <building>
      <roamerCanOpen>true</roamerCanOpen>
      <paintable>false</paintable>
    </building>
  </ThingDef>
  
  
  <ThingDef ParentName="VBY_Hide_DoorBase">
    <defName>VBY_Hide_Tent_Flap</defName>
    <label>Tent Flap</label>
    <description>A simple tent flap made from leathers or textiles.</description>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>	
      <WorkToBuild>900</WorkToBuild>  
    </statBases>	
     <graphicData>
      <texPath>Things/Building/HideTentMover</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>	  
    </graphicData>
	<building>
	  <blueprintGraphicData>
		<texPath>Things/Building/TentFlap_Blueprint</texPath>
		<graphicClass>Graphic_Multi</graphicClass>
	  </blueprintGraphicData>
	</building>
    <uiIconPath>Things/Building/TentFlapIcon</uiIconPath>
    <costStuffCount>25</costStuffCount>
	<staticSunShadowHeight>0</staticSunShadowHeight>	
    <castEdgeShadows>false</castEdgeShadows>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>

  <ThingDef ParentName="VBY_Hide_DoorBase">
    <defName>VBY_Hide_ReinforcedTent_Flap</defName>
    <label>reinforced Tent Flap</label>
    <description>A simple tent flap made from leathers or textiles that's been reinforced with a wooden frame. It's slightly slower than a basic leather door but much sturdier.</description>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>	
      <WorkToBuild>1150</WorkToBuild> 	
      <DoorOpenSpeed>0.85</DoorOpenSpeed> 
    </statBases>
    <graphicData>
      <texPath>Things/Building/HideTentMover</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <enabled>false</enabled>
	  </damageData>	  
    </graphicData>
	<building>
    <blueprintGraphicData>
		<texPath>Things/Building/TentFlap_Blueprint</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
	</blueprintGraphicData>
	</building>
    <uiIconPath>Things/Building/TentFlapIcon</uiIconPath>
    <costStuffCount>25</costStuffCount>
    <costList>
      <WoodLog>40</WoodLog>
    </costList>	
	<staticSunShadowHeight>0</staticSunShadowHeight>	
    <castEdgeShadows>false</castEdgeShadows>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>
  
  
  <ThingDef ParentName="BuildingBase" Name="VBY_Wall" Abstract="True">
	<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
	<altitudeLayer>Building</altitudeLayer>
	<passability>Impassable</passability>
	<blockWind>true</blockWind>
	<castEdgeShadows>true</castEdgeShadows>
	<fillPercent>1</fillPercent>
	<coversFloor>true</coversFloor>
	<placingDraggableDimensions>1</placingDraggableDimensions>
	<tickerType>Never</tickerType>
	<rotatable>false</rotatable>
	<selectable>true</selectable>
	<neverMultiSelect>true</neverMultiSelect>
	<useStuffTerrainAffordance>true</useStuffTerrainAffordance>
	<holdsRoof>true</holdsRoof>
	<designationCategory>Structure</designationCategory>
	<staticSunShadowHeight>1.0</staticSunShadowHeight>
	<blockLight>true</blockLight>
	<canOverlapZones>false</canOverlapZones>
	<fertility>0</fertility>
  </ThingDef>
   
   
   
  <ThingDef ParentName="Wall">
    <defName>VBY_Hide_Wall</defName>
    <label>Tent Wall</label>
    <description>Bits of leather and textiles arranged to keep out the weather. Poorly suited to defense.</description>
    <graphicData>
      <texPath>Things/Building/HideWall/HideWall_Atlas_VBYHide</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>    
    <uiIconPath>Things/Building/HideWallIcon</uiIconPath>   
    <uiIconPathsStuff Inherit="false" />    
    <statBases>
	  <MaxHitPoints>75</MaxHitPoints>
	  <WorkToBuild>40</WorkToBuild>
	  <Flammability>1.5</Flammability>
	  <MeditationFocusStrength>0.15</MeditationFocusStrength>
	  <Beauty>0.75</Beauty>
	</statBases>
	<stuffCategories Inherit="false">
	  <li>Leathery</li>
	  <li>Fabric</li>
	</stuffCategories>
	<costStuffCount>2</costStuffCount>
	<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <building>
      <paintable>false</paintable>
      <blueprintGraphicData>
		<texPath>Things/Building/HideWall_Blueprint</texPath>
      </blueprintGraphicData>
      <relatedBuildCommands Inherit="false">
        <li>Door</li>
      </relatedBuildCommands>
    </building>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Minimal</li>
        </focusTypes>
      </li>
    </comps>
    <damageMultipliers Inherit="false">
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>8</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>4</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>
  
  
</Defs>  