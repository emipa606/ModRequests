  <ThingDef ParentName="BuildingBase" Name="VBY_Hide_DoorBase" Abstract="True">
    <thingClass>Building_Door</thingClass>
    <category>Building</category>
    <altitudeLayer>DoorMoveable</altitudeLayer>
    <fillPercent>1</fillPercent>
    <useHitPoints>true</useHitPoints>
    <stuffCategories>
      <li>Leathery</li>
	  <li>Fabric</li>	  
    </stuffCategories>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <Flammability>1.0</Flammability>
	  <Beauty>0.5</Beauty>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <rotatable>false</rotatable>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Structure</designationCategory>
    <holdsRoof>true</holdsRoof>	
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <drawerType>RealtimeOnly</drawerType>
    <building>
      <isInert>true</isInert>
      <canPlaceOverWall>true</canPlaceOverWall>
      <soundDoorOpenPowered>Door_OpenPowered</soundDoorOpenPowered>
      <soundDoorClosePowered>Door_ClosePowered</soundDoorClosePowered>
      <soundDoorOpenManual>Door_OpenManual</soundDoorOpenManual>
      <soundDoorCloseManual>Door_CloseManual</soundDoorCloseManual>
      <blueprintClass>Blueprint_Door</blueprintClass>
      <blueprintGraphicData>
        <texPath>Things/Building/Door/Door_Blueprint</texPath>
      </blueprintGraphicData>
      <ai_chillDestination>false</ai_chillDestination>
      <roamerCanOpen>true</roamerCanOpen>
    </building>
    <comps>
      <li Class="CompProperties_Forbiddable">
        <allowNonPlayer>true</allowNonPlayer>
	  </li>	
    </comps>
    <placeWorkers>
      <li>PlaceWorker_DoorLearnOpeningSpeed</li>
    </placeWorkers>
  </ThingDef>
  
  
  <ThingDef ParentName="VBY_Hide_DoorBase">
    <defName>VBY_Hide_Tent_Flap</defName>
    <label>Tent Flap</label>
    <description>A simple tent flap made from leathers or textiles.</description>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>	
      <WorkToBuild>250</WorkToBuild>  
    </statBases>	
     <graphicData>
      <texPath>Things/Building/HideTentMover</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>	  
    </graphicData>
	<building>
    <blueprintGraphicData>
		<texPath>Things/Building/TentFlap_Blueprint</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
	</blueprintGraphicData>
	</building>
    <uiIconPath>Things/Building/TentFlapIcon</uiIconPath>
    <costStuffCount>25</costStuffCount>
	<staticSunShadowHeight>0</staticSunShadowHeight>	
    <castEdgeShadows>false</castEdgeShadows>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>

  <ThingDef ParentName="VBY_Hide_DoorBase">
    <defName>VBY_Hide_ReinforcedTent_Flap</defName>
    <label>reinforced Tent Flap</label>
    <description>A simple tent flap made from leathers or textiles that's been reinforced with a wooden frame. It's slightly slower than a basic leather door but much sturdier.</description>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>	
      <WorkToBuild>650</WorkToBuild> 	
      <DoorOpenSpeed>0.85</DoorOpenSpeed> 
    </statBases>
     <graphicData>
      <texPath>Things/Building/HideTentMover</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>	  
    </graphicData>
	<building>
    <blueprintGraphicData>
		<texPath>Things/Building/TentFlap_Blueprint</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
	</blueprintGraphicData>
	</building>
    <uiIconPath>Things/Building/TentFlapIcon</uiIconPath>
    <costStuffCount>25</costStuffCount>
    <costList>
      <WoodLog>40</WoodLog>
    </costList>	
	<staticSunShadowHeight>0</staticSunShadowHeight>	
    <castEdgeShadows>false</castEdgeShadows>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>
  
  
   <ThingDef ParentName="BuildingBase" Name="VBY_Wall" Abstract="True">   
     <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>40</WorkToBuild>
      <Flammability>1.5</Flammability>
      <MeditationFocusStrength>0.15</MeditationFocusStrength>
	  <Beauty>0.5</Beauty>
    </statBases>
	<stuffCategories>
      <li>Leathery</li>
	  <li>Fabric</li>
    </stuffCategories>
    <costStuffCount>2</costStuffCount>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded> 
    <holdsRoof>true</holdsRoof>
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
	</ThingDef>
   
   
   
    <ThingDef ParentName="VBY_Wall">
    <defName>VBY_Hide_Wall</defName>
    <label>Tent Wall</label>
    <description>Bits of leather and textiles arranged to keep out the weather. Poorly suited to defense.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/HideWall/HideWall_Atlas_VBYHide</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    
    <uiIconPath>Things/Building/HideWallIcon</uiIconPath>    
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
				<texPath>Things/Building/HideWall_Blueprint</texPath>
      </blueprintGraphicData>
    </building>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Minimal</li>
        </focusTypes>
      </li>
    </comps>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>8</multiplier>
      </li>
    </damageMultipliers>
    <designationHotKey>Misc3</designationHotKey>
  </ThingDef>
  
  
</Defs>  