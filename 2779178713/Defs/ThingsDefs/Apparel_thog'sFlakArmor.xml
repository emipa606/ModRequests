<?xml version="1.0" encoding="utf-8"?>
<Defs>
<ThingDef ParentName="ArmorMachineableBase">
    <defName>ThogsArmor_FlakShoulderpads</defName>
    <label>flak shoulderpads</label>
    <description>A shaped neck guard and armored arm plates made of hard woven ballistic fiber. They provide good coverage for the upper body, arms and neck, but do nothing to protect the chest and vitals.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/Flak/Shoulders/FlakShoulderpads</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>2.5</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.70</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.18</ArmorRating_Blunt>
      <ArmorRating_Heat>0.15</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>25</Cloth>
      <Steel>30</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <apparel>
	  <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Shoulders</li>
		<li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/Flak/Shoulders/FlakShoulderpads</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
		<li>IndustrialMilitaryAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
 </Defs>