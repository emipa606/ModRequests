<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="ArmorSmithableBase">
    <defName>ThogsArmor_SimpleChestplate</defName>
    <label>simple chestplate</label>
    <description>A simple breatplate which encases most of the torso with a layer of protective metal. Quite protective, though heavy and hindering to move in.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Armor/Simple/Vest/SimpleChestpieceIcon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>    
	<stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>5.5</Mass>
      <Flammability>0.1</Flammability>
      <StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases> 
	<recipeMaker>
	  <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.3</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/Simple/Vest/SimpleChestpiece</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>MedievalMilitary</li>
		<li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
<ThingDef ParentName="ArmorSmithableBase">
    <defName>ThogsArmor_SimplePauldrons</defName>
    <label>simple pauldrons</label>
    <description>An assembly of joined plates and bits of metal protecting the neck, shoulders and arms from all manner of danger. Quite protective, but cumbersome.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
	  <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/Simple/Pauldron/SimpleShoulderguards</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
	<stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
	<costStuffCount>50</costStuffCount>
    <statBases>
      <WorkToMake>8500</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.1</Flammability>
      <StuffEffectMultiplierArmor>0.6</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
	  <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Shoulders</li>
		<li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/Simple/Pauldron/SimpleShoulderguards</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
	    <li>IndustrialMilitaryBasic</li>
        <li>MedievalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
