	<!-- This patch gives you some cables on a classic start, how kind of him -->
	
	<Operation Class="PatchOperationInsert">
		<xpath>Defs/ScenarioDef[defName="Crashlanded"]/scenario/parts/li[16]</xpath>
		<value>
			<li Class="ScenPart_ScatterThingsNearPlayerStart">
			  <def>ScatterThingsNearPlayerStart</def>
			  <thingDef>Med_ElectricalCable</thingDef>
			  <count>75</count>
			</li>
		</value>
	</Operation>
	
	<!-- DBH compat -->
	
