<Patch>
	
	<!-- Patches recipes into their according facilities -->
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CraftingSpot"]/recipes</xpath>
		<value>
			<li>Med_Make_ElectricalCable</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CraftingSpot"]/recipes</xpath>
		<value>
			<li>Med_Make_Pipe</li>
		</value>
	</Operation>
