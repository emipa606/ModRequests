<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--=============================== Anime Eyes Genedef ===================================-->

  <GeneDef ParentName="GeneEyeColor">
    <defName>ANI_Eyes</defName>
    <label>anime eyes</label>
    <description>Cosmetically altered eye shape and lash sizes. Its use among societies tends to spread widespread discontent.</description>
    <iconPath>Genes/Icon</iconPath>
    <displayCategory>Cosmetic</displayCategory>
    <!-- No idea what this refers to. Must check on Friday -->
    <displayOrderInCategory>71</displayOrderInCategory>
    <symbolPack>
      <prefixSymbols>
          <li>
              <symbol>owo</symbol>
          </li>
      </prefixSymbols>
      <suffixSymbols>
          <li>
              <symbol>uwu</symbol>
          </li>
      </suffixSymbols>
  </symbolPack>
    <graphicData>
      <graphicPath>Genes/Male/Texture</graphicPath>
      <graphicPathFemale>Genes/Female/Texture</graphicPathFemale>
      <visibleNorth>False</visibleNorth>
      <drawScale>1.0</drawScale>
      <!-- True because I want to haunt players whose pawns die while having this mod on -->
      <drawWhileDessicated>True</drawWhileDessicated>
      <!-- Update this to set offsets on Friday -->
      <drawOffset>(0,0,0)</drawOffset>
      <drawOffsetSouth>(0,0,0)</drawOffsetSouth>
      <drawOffsetEast>(0,0,0)</drawOffsetEast>
      <!-- Draw over existing eyes -->
      <drawOnEyes>True</drawOnEyes>
      <!-- The eyes are drawn on the head after the hair is drawn -->
      <layer>PostHair</layer>
    </graphicData>
  </GeneDef>

</Defs>