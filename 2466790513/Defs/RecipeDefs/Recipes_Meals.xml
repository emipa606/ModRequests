<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Adds recipe to cook rotten meals -->
	<RecipeDef>
		<defName>CookMealRotten</defName>
		<label>cook rotten meal</label>
		<description>Cook a meal from rotten meat. Safer to eat than uncooked rotten meat, but much of the ingredients are wasted.</description>
		<jobString>Cooking a rotten meal.</jobString>
		<workAmount>400</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MeatRotten</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MeatRotten</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MealRotten>1</MealRotten>
		</products>
		<workSkill>Cooking</workSkill>
		<recipeUsers>
			<li>Campfire</li>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
	</RecipeDef>

	<!-- Adds bulk recipe to cook rotten meals -->
	<RecipeDef>
		<defName>CookMealRottenBulk</defName>
		<label>cook rotten meal x4</label>
		<description>Cook 4 meals from rotten meat. Safer to eat than uncooked rotten meat, but much of the ingredients are wasted.</description>
		<jobString>Cooking a rotten meal.</jobString>
		<workAmount>1600</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MeatRotten</li>
					</thingDefs>
				</filter>
				<count>100</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MeatRotten</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MealRotten>4</MealRotten>
		</products>
		<workSkill>Cooking</workSkill>
		<recipeUsers>
			<li>Campfire</li>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
	</RecipeDef>

</Defs>