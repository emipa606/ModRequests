<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Adds rotten meals -->
	<ThingDef ParentName="MealBase">
		<defName>MealRotten</defName>
		<label>rotten meal</label>
		<description>A meal cooked from rotting meat. It's somewhat safer to eat than uncooked rotten meat, but still tastes awful.</description>
		<graphicData>
			<texPath>Things/Item/Meal/MealRotten</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.5</MarketValue>
			<Beauty>-4</Beauty>
			<Nutrition>0.30</Nutrition>
			<FoodPoisonChanceFixedHuman>0.55</FoodPoisonChanceFixedHuman>
		</statBases>
		<ingestible>
			<preferability>DesperateOnly</preferability>
			<tasteThought>AteMealRotten</tasteThought>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
			<canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
		</ingestible>
	</ThingDef>

</Defs>