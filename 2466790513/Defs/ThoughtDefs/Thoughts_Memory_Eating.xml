<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Adds thought for eating raw rotten meat -->
	<ThoughtDef>
		<defName>AteMeatRotten</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate rotten meat</label>
				<description>I ate moldy, disease-ridden rotten meat. I feel like throwing up.</description>
				<baseMoodEffect>-25</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- Adds thought for eating rotten meal -->
	<ThoughtDef>
		<defName>AteMealRotten</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1.2</durationDays>
		<stages>
			<li>
				<label>ate rotten meal</label>
				<description>I had to eat a disgusting meal made from rotten meat. I think I'm sick...</description>
				<baseMoodEffect>-20</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>