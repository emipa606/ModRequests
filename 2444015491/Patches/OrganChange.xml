<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Core</li>
		</mods>
		<match Class="PatchOperationSequence">
			<!--<success>Always</success>-->
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/BodyPartDef[defName="Heart"]/spawnThingOnRemoved</xpath>
					<value>
						<spawnThingOnRemoved>NWN_FreshHeart</spawnThingOnRemoved>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/BodyPartDef[defName="Lung"]/spawnThingOnRemoved</xpath>
					<value>
						<spawnThingOnRemoved>NWN_FreshLung</spawnThingOnRemoved>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/BodyPartDef[defName="Liver"]/spawnThingOnRemoved</xpath>
					<value>
						<spawnThingOnRemoved>NWN_FreshLiver</spawnThingOnRemoved>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/BodyPartDef[defName="Kidney"]/spawnThingOnRemoved</xpath>
					<value>
						<spawnThingOnRemoved>NWN_FreshKidney</spawnThingOnRemoved>
					</value>
				</li>
				<!-- base : 500 -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Heart"]/statBases/MarketValue</xpath>
					<value>
						<MarketValue>700</MarketValue>
					</value>
				</li>
				<!-- base : 500 -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Liver"]/statBases/MarketValue</xpath>
					<value>
						<MarketValue>700</MarketValue>
					</value>
				</li>
				<!-- base : 250 -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Kidney"]/statBases/MarketValue</xpath>
					<value>
						<MarketValue>450</MarketValue>
					</value>
				</li>
				<!-- base : 400 -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Lung"]/statBases/MarketValue</xpath>
					<value>
						<MarketValue>600</MarketValue>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
</Patch>
