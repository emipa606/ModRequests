<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThoughtDef>
        <defName>TRAHS_WearingFursuitThoughtHatred</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>TRAHS_WearingFursuitHediff</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <nullifyingTraits>
            <li>TRAHS_FursuiterTrait</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>uncomfortable fursuit</label>
                <description>This fursuit is uncomfortable... I don't like this.</description>
                <baseMoodEffect>-7</baseMoodEffect>
            </li>
            <li>
                <label>annoying fursuit</label>
                <description>This is stupid, why am I still wearing this?</description>
                <baseMoodEffect>-10</baseMoodEffect>
            </li>
            <li>
                <label>distressing fursuit</label>
                <description>Okay... Can I please take this off now? I don't feel that great.</description>
                <baseMoodEffect>-25</baseMoodEffect>
            </li>
            <li>
                <label>agonizing fursuit</label>
                <description>PLEASE! SOMEONE TAKE THIS OFF OF ME I CAN'T TAKE THIS ANYMORE.</description>
                <baseMoodEffect>-40</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>TRAHS_WearingFursuitThoughtLove</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>TRAHS_WearingFursuitHediff</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <requiredTraits>
            <li>TRAHS_FursuiterTrait</li> <!-- I found requiredTraits from looking through the C#. So happy ILSpy exists -->
        </requiredTraits>
        <stages>
            <li>
                <label>comfortable fursuit</label>
                <description>What a comfortable fursuit. I'm enjoying this.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>pleasant fursuit</label>
                <description>I've been wearing a suit for a while and it feels good.</description>
                <baseMoodEffect>8</baseMoodEffect>
            </li>
            <li>
                <label>soothing fursuit</label>
                <description>This is great! I feel so calm in this suit.</description>
                <baseMoodEffect>14</baseMoodEffect>
            </li>
            <li>
                <label>heavenly fursuit</label>
                <description>I feel true connection with myself now, and it's making me beyond happy.</description>
                <baseMoodEffect>30</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>