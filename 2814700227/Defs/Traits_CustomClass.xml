<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- A trait and at least one book must be defined for each custom class.
	Mage types should use the Arcane Tome example, and can define a torn script as a cheaper version that randomly assigns abilities
	Fighter types should use Martial Tome example
	Classes that support both types can use either Tome type. -->
	<!-- Custom Class Trait Example -->
	<TraitDef>
		<defName>TM_TimeFlayer</defName>
		<ignoreConfigErrors>true</ignoreConfigErrors>
		<commonality>0</commonality>
		<degreeDatas>
			<li>
				<label>Space-Time Mage</label>
				<description>[PAWN_nameDef] is a Space-Time Mage; Space-Time mages are controllers of the space-time manifold. Their magic is designed to gain control of the battlefield, made to prevent enemies from reaching them, and is typically granted as part of a pact with with an extraplanar creature of similar abilities.</description>
				<degree>4</degree>
				<statOffsets>
					<GlobalLearningFactor>0.25</GlobalLearningFactor>
					<ResearchSpeed>0.20</ResearchSpeed>
					<WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
					<PsychicSensitivity>0.10</PsychicSensitivity>
					<!-- <PsychicSensitivity>1</PsychicSensitivity> -->
				</statOffsets>
				<statFactors/>
			</li>
		</degreeDatas>
		<modExtensions>
			<li Class="TorannMagic.TMDefs.DefModExtension_TraitEnchantments">
				<!-- <xpGain>-0.20</xpGain>-->
				<!-- <maxMP>-0.5</maxMP>-->
				<!-- <maxSP>-0.5</maxSP>-->
				<!-- <mpRegenRate>0.20</mpRegenRate>-->
				<!-- <mpCost>-0.4</mpCost> -->
				<!-- <magicCooldown>-0.4</magicCooldown> -->
				<!-- <mightCooldown>-0.20</mightCooldown>-->
			</li>
		</modExtensions>
		<conflictingTraits/>
	</TraitDef>
</Defs>