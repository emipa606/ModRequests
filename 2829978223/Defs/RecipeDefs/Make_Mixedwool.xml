<?xml version="1.0" encoding="utf-8" ?>
 <Defs>

 <RecipeDef>
    <defName>Make_Mixedwool</defName>
    <label>make mixedwool</label>
    <description>Various wool materials are mixed to make a new wool material.</description>
    <jobString>Making mixedwool.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <workAmount>500</workAmount>
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>50</targetCountAdjustment>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Wools</li>
          </categories>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <products>
      <WoolMixed>50</WoolMixed>
    </products>
    <fixedIngredientFilter>
			<categories>
				<li>Wools</li>
			</categories>
      <disallowedThingDefs>
        <li>WoolMixed</li>
      </disallowedThingDefs>
		</fixedIngredientFilter>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

  </Defs>