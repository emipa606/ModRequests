<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<ThingCategoryDef>
		<defName>ThingCategory_Displayable</defName>
		<label>displayable</label>
		<parent>Items</parent>
	</ThingCategoryDef>
	
	<StatCategoryDef>
		<defName>Estupendo_DisplayStats</defName>
		<label>Display Details</label>
		<displayOrder>1000</displayOrder>
		<displayAllByDefault>true</displayAllByDefault>
	</StatCategoryDef>
	
	<ThingDef Class="EstupendoBase.Buildings.ThingDef_Plinth" ParentName="BuildingBase">
		<defName>Estupendo_Plinth</defName>
		<label>display plinth</label>
		<thingClass>EstupendoBase.Buildings.Building_Plinth</thingClass>
		<graphicData>
			<texPath>things/buildings/Plinth/DisplayPlinth_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(255,0,0)</color>
			<shaderType>CutoutComplex</shaderType>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Custom10</li>
			</linkFlags>
		</graphicData>
		<building>
			<blueprintGraphicData>
				<texPath>things/buildings/Plinth/DisplayPlinth_AtlasBP</texPath>
			</blueprintGraphicData>
			<ai_chillDestination>false</ai_chillDestination>
			<artificialForMeditationPurposes>true</artificialForMeditationPurposes>
		</building>
		<hasInteractionCell>false</hasInteractionCell>
		<uiIconPath>things/buildings/Plinth/DisplayPlinthSmall_south</uiIconPath>
		<drawerType>MapMeshAndRealTime</drawerType>
		<rotatable>false</rotatable>
		<description>Provides an area to display a variety of objects. Pair with a Plaque to activate.</description>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>True</useHitPoints>
		<passability>Standable</passability>
		<statBases>
			<WorkToBuild>50</WorkToBuild>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>1</Beauty>
			<Mass>10</Mass>
		</statBases>
		<placingDraggableDimensions>2</placingDraggableDimensions>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>10</costStuffCount>
		<costList>
			<WoodLog>5</WoodLog>
		</costList>
		<resourcesFractionWhenDeconstructed>0.5</resourcesFractionWhenDeconstructed>
		<designationCategory>Joy</designationCategory>
		<comps>
			<li Class="CompProperties_Facility">
			</li>
		</comps>
		<researchPrerequisites>
			<li>Taxidermy</li>
		</researchPrerequisites>
	</ThingDef>
	
	<ThingDef Name="Estupendo_Plaque" Class="EstupendoBase.Buildings.ThingDef_Plaque" ParentName="BuildingBase">
		<defName>Estupendo_Plaque</defName>
		<label>plaque</label>
		<description>Denotes a display for your colonists and visitors to enjoy. Requires a Plinth area big enough to display its contents.</description>
		<thingClass>EstupendoBase.Buildings.Building_Plaque</thingClass>
		<graphicData>
		  <texPath>things/buildings/Plaque/Plaque</texPath>
		  <graphicClass>Graphic_Multi</graphicClass>
		  <shaderType>CutoutComplex</shaderType>
		</graphicData>
		<drawerType>RealtimeOnly</drawerType>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<rotatable>true</rotatable>
		<minifiedDef>MinifiedThing</minifiedDef>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>True</useHitPoints>
		<passability>Standable</passability>
		<inspectorTabs>
			<li>ITab_Storage</li>
			<li>ITab_Art</li>
		</inspectorTabs>
		<building>
			<ai_chillDestination>true</ai_chillDestination>
			<artificialForMeditationPurposes>true</artificialForMeditationPurposes>
			<joyKind>Meditative</joyKind>
			<watchBuildingStandDistanceRange>-1~1</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>3</watchBuildingStandRectWidth>
			<watchBuildingInSameRoom>true</watchBuildingInSameRoom>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>ThingCategory_Displayable</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>ThingCategory_Displayable</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
			<li>EstupendoBase.Buildings.PlaceWorker_PlinthArea</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<statBases>
			<WorkToBuild>10</WorkToBuild>
			<MaxHitPoints>1000</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>1</Beauty>
			<Mass>35</Mass>
			<JoyGainFactor>0.1</JoyGainFactor>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<costList>
			<WoodLog>5</WoodLog>
			<Steel>1</Steel>
		</costList>
		<resourcesFractionWhenDeconstructed>0.5</resourcesFractionWhenDeconstructed>
		<designationCategory>Joy</designationCategory>
		<hasInteractionCell>true</hasInteractionCell>
		<interactionCellOffset>(0,0,0)</interactionCellOffset>
		<thingCategories>
			<li>BuildingsJoy</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtSculpture</nameMaker>
				<descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
				<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>Estupendo_Plinth</li>
				</linkableFacilities>
			</li>
		</comps>
		<researchPrerequisites>
			<li>Taxidermy</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>