<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--=============== Medicines ====================-->
  <ThingDef ParentName="MedicineBase">
    <defName>HerbalComposite</defName>
    <label>herbal composite medicine</label>
    <description>A box of herbs, combined with rags, tinctures and a trepanation kit available for treatment.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Medicine/HerbalComposite</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <statBases>
      <MarketValue>12</MarketValue>
      <Mass>0.35</Mass>
      <Flammability>1.3</Flammability>
      <MedicalPotency>0.75</MedicalPotency>
      <MedicalQualityMax>0.80</MedicalQualityMax>
      <DeteriorationRate>6</DeteriorationRate>
	  <WorkToMake>250</WorkToMake>
    </statBases>
    <costList>
      <MedicineHerbal>2</MedicineHerbal>
      <Cloth>15</Cloth>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
        <li>CraftingSpot</li>
	    	<li>DrugLab</li>
      </recipeUsers>
      <researchPrerequisite>DrugProduction</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
        <Intellectual>4</Intellectual>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="MedicineBase">
    <defName>HerbalMedkit</defName>
    <label>herbal medkit</label>
    <description>A box of herbal medicine, combined with rags, tinctures, trepanation kits and splints available for treatment.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Medicine/HerbalMedkit</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <statBases>
      <MarketValue>15</MarketValue>
      <Mass>0.35</Mass>
      <Flammability>1.3</Flammability>
      <MedicalPotency>0.90</MedicalPotency>
      <MedicalQualityMax>0.90</MedicalQualityMax>
      <DeteriorationRate>6</DeteriorationRate>
	  <WorkToMake>400</WorkToMake>
    </statBases>
    <costList>
      <MedicineHerbal>3</MedicineHerbal>
      <Cloth>25</Cloth>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
        <li>CraftingSpot</li>
	    	<li>DrugLab</li>
      </recipeUsers>
      <researchPrerequisite>MedicineProduction</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
        <Intellectual>4</Intellectual>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
</Defs>
