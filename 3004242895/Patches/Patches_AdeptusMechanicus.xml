<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <!--Adeptus Mechanicus: Armoury-->
  <Operation Class="PatchOperation.FindModByID">
    <mods>
      <li>ogliss.admech.armoury</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>
            Defs/RecipeDef[@Name="MeleeWeaponsBase"]/ingredients/li/filter/categories |
            Defs/RecipeDef[@Name="MeleeWeaponsBase"]/fixedIngredientFilter/categories
          </xpath>
          <value>
            <li>OGIMelee</li>
            <li>OGAMMelee</li>
            <li>OGEMelee</li>
            <li>OGDEMelee</li>
            <li>OGTMelee</li>
            <li>OGKMelee</li>
            <li>OGCMelee</li>
            <li>OGOMelee</li>
            <li>OGNMelee</li>
        </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>
            Defs/RecipeDef[@Name="FireWeaponsBase"]/ingredients/li/filter/categories |
            Defs/RecipeDef[@Name="FireWeaponsBase"]/fixedIngredientFilter/categories
          </xpath>
          <value>
            <li>OGIRanged</li>
            <li>OGAMRanged</li>
            <li>OGERanged</li>
            <li>OGDERanged</li>
            <li>OGTRanged</li>
            <li>OGKRanged</li>
            <li>OGCRanged</li>
            <li>OGORanged</li>
            <li>OGNRanged</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName = "HardWeapons"]/weaponTags</xpath>
          <value>
            <li>PowerWeapon</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>