<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
  <!--Polarisbloc - Mechenemy-->
  <Operation Class="PatchOperation.FindModByID">
    <mods>
      <li>vanya.polarisbloc.mechenemy</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName = "HardWeapons"]/weaponTags</xpath>
      <value>
        <li>MTVMelee</li>
        <li>MTVCARifle</li>
        <li>MTVCASniper</li>
        <li>MTVCARocket</li>
        <li>MTVGrenade</li>
        <li>MTVMelee</li>
        <li>MTVMechGunA</li>
        <li>MTVMechGunB</li>
        <li>MTVMechGunC</li>
        <li>MTVMechGunD</li>
        <li>MTVMechSniper</li>
        <li>MTVMechRocket</li>
        <li>MTVMelee</li>
        <li>MTVGrenade</li>
      </value>
    </match>
  </Operation>
  
  <!--Polarisbloc - Security Force-->
  <Operation Class="PatchOperation.FindModByID">
    <mods>
      <li>vanya.polarisbloc.securityforce</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName = "HardWeapons"]/weaponTags</xpath>
      <value>
        <li>Polarisbloc_CaniculaRifle</li>
        <li>Polarisbloc_CaniculaSniper</li>
      </value>
    </match>
  </Operation>
  
</Patch>