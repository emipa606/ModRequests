<?xml version="1.0" encoding="utf-8" ?>
<Defs>
   
  <!--This is just to sort out weapons that aren't unlocked by research but should require training nonetheless-->
  <ThingDef>
    <thingClass>Thing</thingClass>
    <defName>HardWeapons</defName>
    <label>HardWeapons</label>
    <weaponTags>
      <li>Gun</li>
      <li>Bladelink</li>
      <li>UltratechMelee</li>
      <li>EltexStaff</li>
    </weaponTags>
  </ThingDef>

  <!--This is just to sort out weapons that should never require training, even if unlocked by research-->
  <ThingDef>
    <thingClass>Thing</thingClass>
    <defName>EasyWeapons</defName>
    <label>EasyWeapons</label>
    <weaponTags>
      <!--<li>Artillery</li>-->
      <li>ImprovisedMelee</li>
    </weaponTags>
    <!--These will only be used if RequireTrainingForSingleUseWeapons is unchecked on options-->
    <thingSetMakerTags>
      <li>SingleUseWeapon</li>
    </thingSetMakerTags>
  </ThingDef>
  
</Defs>