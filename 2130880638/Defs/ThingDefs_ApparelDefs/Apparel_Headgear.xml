  <ThingDef ParentName="RHMaskMakeableBase_RHFactions">
    <defName>RNApparel_Beret_SerbianArmy_Brown</defName>
    <label>beret (Serbian army)</label>
    <description>A Serbian/Yugoslavia beret that has a cap badge which identifies what regiment the wearer belongs to.</description>
    <graphicData>
      <texPath>Things/Apparel/Display/SerbBeret</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
	  <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.07</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.12</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
	<equippedStatOffsets>
	  <PsychicSensitivity>-0.10</PsychicSensitivity>
	  <ShootingAccuracyPawn>0.02</ShootingAccuracyPawn>
