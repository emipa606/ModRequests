<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Name="FF_AmmoBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>300</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <Mass>0.02</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>FF_Ammunition</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="FF_AmmoBase">
    <defName>FF_Ammunition_Primitive</defName>
    <label>primitive ammunition</label>
    <description>Primitive ammunition, mostly consisting of arrows and pointy sticks thrown by muscular force.</description>
    <graphicData>
      <texPath>Things/Ammunition/AmmoPrimitive</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.3</MarketValue>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="FF_AmmoBase">
    <defName>FF_Ammunition_Industrial</defName>
    <label>industrial ammunition</label>
    <description>Standard issue industrial bullets and magazines of different calibers.</description>
    <graphicData>
      <texPath>Things/Ammunition/AmmoIndustrial</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="FF_AmmoBase">
    <defName>FF_Ammunition_Spacer</defName>
    <label>charged-shot ammunition</label>
    <description>Spacer-tech bullets that can be charged with unstable energy.</description>
    <graphicData>
      <texPath>Things/Ammunition/AmmoSpacer</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>3.2</MarketValue>
    </statBases>
  </ThingDef>

</Defs>