<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Mantodean Acid Launcher -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="Gun_MantoLauncher"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="Gun_MantoLauncher"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Gun_MantoLauncher"]/comps</xpath>
    <value>
      <li Class="Reloading.CompProperties_Reloadable">
        <compClass>Reloading.CompReloadable</compClass>
        <MaxShots>20</MaxShots>
        <AmmoFilter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </AmmoFilter>
        <ItemsPerShot>1</ItemsPerShot>
        <ReloadTimePerShot>0.05</ReloadTimePerShot>
		<ReloadSound>Standard_Reload</ReloadSound>
        <GenerateAmmo>
          <Chemfuel>40~60</Chemfuel>
        </GenerateAmmo>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="Gun_MantoLauncher"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Chemfuel_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Chemfuel_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

</Patch>