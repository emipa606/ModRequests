<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Chatoyan sniper Rifle -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="Nr_ChRifle"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="Nr_ChRifle"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Nr_ChRifle"]/comps</xpath>
    <value>
      <li Class="Reloading.CompProperties_Reloadable">
        <compClass>Reloading.CompReloadable</compClass>
        <MaxShots>60</MaxShots>
        <AmmoFilter>
          <thingDefs>
            <li>FF_Ammunition_Spacer</li>
          </thingDefs>
        </AmmoFilter>
        <ItemsPerShot>1</ItemsPerShot>
        <ReloadTimePerShot>0.02</ReloadTimePerShot>
		<ReloadSound>Standard_Reload</ReloadSound>
          <GenerateAmmo>
            <FF_Ammunition_Spacer>60~120</FF_Ammunition_Spacer>
          </GenerateAmmo>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="Nr_ChRifle"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Spacer_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Spacer_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

