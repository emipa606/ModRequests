<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Triple Torpedo Launcher(VE) -->

  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/HediffDef[defName="FSG_VE_InstalledTorpedoSingle"]/comps</xpath>
    <value>
        <li Class="Reloading.HediffCompProperties_Reloadable">
          <compClass>Reloading.HediffComp_Reloadable</compClass>
          <MaxShots>3</MaxShots>
          <AmmoFilter>
            <thingDefs>
               <li>FF_Ammunition_Industrial</li>
            </thingDefs>
          </AmmoFilter>
          <ItemsPerShot>1</ItemsPerShot>
          <ReloadTimePerShot>0.3</ReloadTimePerShot>
          <ReloadSound>Standard_Reload</ReloadSound>
          <GenerateAmmo>
            <FF_Ammunition_Industrial>20~30</FF_Ammunition_Industrial>
          </GenerateAmmo>
        </li>
    </value>
  </Operation>

