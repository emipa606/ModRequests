<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- NCR N99 10mm Pistol -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="JDS_NCR_Weapon_N99_10mm_pistol"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="JDS_NCR_Weapon_N99_10mm_pistol"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="JDS_NCR_Weapon_N99_10mm_pistol"]/comps</xpath>
    <value>
      <li Class="Reloading.CompProperties_Reloadable">
        <compClass>Reloading.CompReloadable</compClass>
        <MaxShots>12</MaxShots> <!-- burstShotCount 2 -->
        <AmmoFilter>
          <thingDefs> <!-- 10mm -->
            <li>FF_Ammunition_Industrial</li>
          </thingDefs>
        </AmmoFilter>
        <ItemsPerShot>1</ItemsPerShot>
        <ReloadTimePerShot>0.08</ReloadTimePerShot>
          <GenerateAmmo>
            <FF_Ammunition_Industrial>24~36</FF_Ammunition_Industrial>
          </GenerateAmmo>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="JDS_NCR_Weapon_N99_10mm_pistol"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Industrial_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Industrial_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

