<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleTurretDef[defName="50CalMounted"]/ammunition/thingDefs/li[text()="Steel"]</xpath>
    <value>
        <li>FF_Ammunition_Industrial</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleTurretDef[defName="HeavyMachineGunMounted"]/ammunition/thingDefs/li[text()="Steel"]</xpath>
    <value>
        <li>FF_Ammunition_Industrial</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleTurretDef[defName="MountedLaserTurret"]/magazineCapacity</xpath>
    <value>
      <magazineCapacity>50</magazineCapacity>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/Vehicles.VehicleTurretDef[defName="MountedLaserTurret"]</xpath>
    <value>
      <genericAmmo>true</genericAmmo>
      <ammunition>
        <thingDefs>
          <li>FF_Ammunition_Spacer</li>
        </thingDefs>
      </ammunition>
    </value>
  </Operation>

</Patch>