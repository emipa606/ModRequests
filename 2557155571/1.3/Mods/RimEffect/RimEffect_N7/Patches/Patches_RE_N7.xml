<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- N7 Battle Rifle -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="REN7_Gun_N7BattleRifle"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="REN7_Gun_N7BattleRifle"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="REN7_Gun_N7BattleRifle"]/comps</xpath>
    <value>
        <li Class="Reloading.CompProperties_Reloadable">
          <compClass>Reloading.CompReloadable</compClass>
          <MaxShots>40</MaxShots>
          <AmmoFilter>
            <thingDefs>
              <li>FF_Ammunition_Ultratech</li>
            </thingDefs>
          </AmmoFilter>
          <ItemsPerShot>1</ItemsPerShot>
          <ReloadTimePerShot>0.0375</ReloadTimePerShot>
		  <ReloadSound>REN7_Interact_N7BattleRifle</ReloadSound>
          <GenerateAmmo>
            <FF_Ammunition_Ultratech>60~80</FF_Ammunition_Ultratech>
          </GenerateAmmo>
        </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="REN7_Gun_N7BattleRifle"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Ultratech_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Ultratech_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

