<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Spacer Assault Rifle -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="RE_Gun_SpacerAssaultRifle"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="RE_Gun_SpacerAssaultRifle"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="RE_Gun_SpacerAssaultRifle"]/comps</xpath>
    <value>
        <li Class="Reloading.CompProperties_Reloadable">
          <compClass>Reloading.CompReloadable</compClass>
          <MaxShots>80</MaxShots>
          <AmmoFilter>
            <thingDefs>
              <li>FF_Ammunition_Ultratech</li>
            </thingDefs>
          </AmmoFilter>
          <ItemsPerShot>1</ItemsPerShot>
          <ReloadTimePerShot>0.01875</ReloadTimePerShot>
		  <ReloadSound>RE_Interact_Avenger</ReloadSound>
          <GenerateAmmo>
            <FF_Ammunition_Ultratech>80~120</FF_Ammunition_Ultratech>
          </GenerateAmmo>
        </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="RE_Gun_SpacerAssaultRifle"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Ultratech_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Ultratech_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

