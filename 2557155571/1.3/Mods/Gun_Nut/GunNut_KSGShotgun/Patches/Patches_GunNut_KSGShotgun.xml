<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- KSG -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="HRK_KSG_S"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="HRK_KSG_S"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[XND] Proper Shotguns (Continued)</li>
    </mods>

    <match Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="HRK_KSG_S"]/comps</xpath>
      <value>
          <li Class="Reloading.CompProperties_Reloadable">
            <compClass>Reloading.CompReloadable</compClass>
            <MaxShots>90</MaxShots> <!-- pelletCount 6 -->
            <AmmoFilter>
              <thingDefs>
                <li>FF_Ammunition_Industrial</li>
              </thingDefs>
            </AmmoFilter>
            <ItemsPerShot>1</ItemsPerShot>
            <ReloadTimePerShot>0.01</ReloadTimePerShot>
            <ReloadSound>Standard_Reload</ReloadSound>
            <GenerateAmmo>
              <FF_Ammunition_Industrial>90~180</FF_Ammunition_Industrial>
            </GenerateAmmo>
          </li>
      </value>
    </match>

    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="HRK_KSG_S"]/comps</xpath>
      <value>
          <li Class="Reloading.CompProperties_Reloadable">
            <compClass>Reloading.CompReloadable</compClass>
            <MaxShots>15</MaxShots> <!-- burstShotCount 1 -->
            <AmmoFilter>
              <thingDefs> <!-- 12 Gauge -->
                <li>FF_Ammunition_Industrial</li>
              </thingDefs>
            </AmmoFilter>
            <ItemsPerShot>5</ItemsPerShot>
            <ReloadTimePerShot>0.05</ReloadTimePerShot>
            <ReloadSound>Standard_Reload</ReloadSound>
            <GenerateAmmo>
              <FF_Ammunition_Industrial>75~150</FF_Ammunition_Industrial>
            </GenerateAmmo>
          </li>
      </value>
    </nomatch>

  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="HRK_KSG_S"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Industrial_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Industrial_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

