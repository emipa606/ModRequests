<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- plasma pistol -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="KIT_Gun_PlasmaPistol"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="KIT_Gun_PlasmaPistol"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="KIT_Gun_PlasmaPistol"]/comps</xpath>
    <value>
      <li Class="Reloading.CompProperties_Reloadable">
        <compClass>Reloading.CompReloadable</compClass>
        <MaxShots>7</MaxShots>
        <AmmoFilter>
          <thingDefs>
            <li>FF_Ammunition_Ultratech</li>
          </thingDefs>
        </AmmoFilter>
        <ItemsPerShot>1</ItemsPerShot>
        <ReloadTimePerShot>0.1</ReloadTimePerShot>
		<ReloadSound>Standard_Reload</ReloadSound>
          <GenerateAmmo>
            <FF_Ammunition_Ultratech>30~45</FF_Ammunition_Ultratech>
          </GenerateAmmo>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="KIT_Gun_PlasmaPistol"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Ultratech_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Ultratech_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

