<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- AA-12 -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="RNGun_AA12_Shotgun"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="RNGun_AA12_Shotgun"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[XND] Proper Shotguns (Continued)</li>
    </mods>

    <match Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="RNGun_AA12_Shotgun"]/comps</xpath>
      <value>
          <li Class="Reloading.CompProperties_Reloadable">
            <compClass>Reloading.CompReloadable</compClass>
            <MaxShots>48</MaxShots> <!-- pelletCount 6 -->
            <AmmoFilter>
              <thingDefs> <!-- 12 gauge -->
                <li>FF_Ammunition_Industrial</li>
              </thingDefs>
            </AmmoFilter>
            <ItemsPerShot>1</ItemsPerShot>
            <ReloadTimePerShot>0.02</ReloadTimePerShot>
            <ReloadSound>Standard_Reload</ReloadSound>
            <GenerateAmmo>
              <FF_Ammunition_Industrial>48~96</FF_Ammunition_Industrial>
            </GenerateAmmo>
          </li>
      </value>
    </match>

    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="RNGun_AA12_Shotgun"]/comps</xpath>
      <value>
          <li Class="Reloading.CompProperties_Reloadable">
            <compClass>Reloading.CompReloadable</compClass>
            <MaxShots>8</MaxShots>
            <AmmoFilter>
              <thingDefs>
                <li>FF_Ammunition_Industrial</li>
              </thingDefs>
            </AmmoFilter>
            <ItemsPerShot>5</ItemsPerShot>
            <ReloadTimePerShot>0.1</ReloadTimePerShot>
            <ReloadSound>Standard_Reload</ReloadSound>
            <GenerateAmmo>
              <FF_Ammunition_Industrial>40~80</FF_Ammunition_Industrial>
            </GenerateAmmo>
          </li>
      </value>
    </nomatch>

  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="RNGun_AA12_Shotgun"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Industrial_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Industrial_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

