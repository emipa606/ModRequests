<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- LASER RIFLE -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="Cogboi_Gun_LaserRifle"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="Cogboi_Gun_LaserRifle"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Cogboi_Gun_LaserRifle"]/comps</xpath>
    <value>
      <li Class="Reloading.CompProperties_Reloadable">
        <compClass>Reloading.CompReloadable</compClass>
        <MaxShots>40</MaxShots> <!-- burstShotCount 1 -->
        <AmmoFilter>
          <thingDefs>
            <li>FF_Ammunition_Spacer</li>
          </thingDefs>
        </AmmoFilter>
        <ItemsPerShot>1</ItemsPerShot>
        <ReloadTimePerShot>0.03</ReloadTimePerShot>
		<ReloadSound>Standard_Reload</ReloadSound>
        <GenerateAmmo>
          <FF_Ammunition_Spacer>40~80</FF_Ammunition_Spacer>
        </GenerateAmmo>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="Cogboi_Gun_LaserRifle"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Spacer_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Spacer_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

