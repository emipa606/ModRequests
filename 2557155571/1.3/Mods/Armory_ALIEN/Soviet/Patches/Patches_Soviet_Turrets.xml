<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- See Languages folder for text replacement, this was done for ease of translators -->

<!-- Mounted AGS-17 Plamya -->

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName = "Turret_AGS"]/comps/li/fuelFilter</xpath>
    <value>
      <fuelFilter><thingDefs><li>FF_Ammunition_Industrial</li></thingDefs></fuelFilter>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName = "Turret_AGS"]/comps/li/fuelMultiplier</xpath>
    <value>
      <fuelMultiplier>0.2</fuelMultiplier>
    </value>
  </Operation>

<!-- Mounted NSV Utyos -->

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName = "Turret_NSV"]/comps/li/fuelFilter</xpath>
    <value>
      <fuelFilter><thingDefs><li>FF_Ammunition_Industrial</li></thingDefs></fuelFilter>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName = "Turret_NSV"]/comps/li/fuelMultiplier</xpath>
    <value>
      <fuelMultiplier>1</fuelMultiplier>
    </value>
  </Operation>

</Patch>