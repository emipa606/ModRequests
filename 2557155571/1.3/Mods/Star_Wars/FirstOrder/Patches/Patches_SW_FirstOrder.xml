<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- F-11D Blaster Rifle -->

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="F-11D_Blaster_Rifle"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="F-11D_Blaster_Rifle"]</xpath>
      <value>
        <comps />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="F-11D_Blaster_Rifle"]/comps</xpath>
    <value>
      <li Class="Reloading.CompProperties_Reloadable">
        <compClass>Reloading.CompReloadable</compClass>
        <MaxShots>24</MaxShots> <!-- burstShotCount 8 -->
        <AmmoFilter>
          <thingDefs>
            <li>FF_Ammunition_Spacer</li>
          </thingDefs>
        </AmmoFilter>
        <ItemsPerShot>1</ItemsPerShot>
        <ReloadTimePerShot>0.05</ReloadTimePerShot>
          <GenerateAmmo>
            <FF_Ammunition_Spacer>48~72</FF_Ammunition_Spacer>
          </GenerateAmmo>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="F-11D_Blaster_Rifle"]</xpath>
    <value>
      <li Class="AnimalBehaviours.AnimalStatExtension">
        <statToAdd>
          <li>FF_Ammo_Type</li>	
        </statToAdd>
        <statValues>
          <li>FF_Spacer_Ammo</li>
        </statValues>
        <statDescriptions>
          <li>FF_Spacer_Desc</li>
        </statDescriptions>
      </li>
    </value>
  </Operation>

