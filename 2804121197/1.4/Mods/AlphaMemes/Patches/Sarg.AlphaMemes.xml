<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Associate precepts with their PreceptGenExtension. Sort alphabetically by PreceptGenDef. -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/PreceptDef[defName="AM_AnimalRelease_Encouraged" or defName="AM_AnimalSlaughter_Desired"]</xpath>
		<value>
			<li Class="TraderGen.Ideo.PreceptGenExtension">
				<defs>
					<li>TG_Animal_Purchaser</li>
				</defs>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/PreceptDef[defName="AM_Armour_Sharp" or defName="AM_Armour_Blunt" or defName="AM_Armour_Heat"]
		</xpath>
		<value>
			<li Class="TraderGen.Ideo.PreceptGenExtension">
				<defs>
					<li>TG_Armour_Preferred</li>
				</defs>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/PreceptDef[defName="AM_Art_Desired"]
		</xpath>
		<value>
			<li Class="TraderGen.Ideo.PreceptGenExtension">
				<defs>
					<li>TG_Art_Desired</li>
				</defs>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/PreceptDef[defName="AM_CombatProwess_Increased"]</xpath>
		<value>
			<li Class="TraderGen.Ideo.PreceptGenExtension">
				<defs>
					<li>TG_CombatProwess_Distance</li>
				</defs>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/PreceptDef[defName="AM_CombatProwess_Melee"]</xpath>
		<value>
			<li Class="TraderGen.Ideo.PreceptGenExtension">
				<defs>
					<li>TG_CombatProwess_Melee</li>
				</defs>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/PreceptDef[defName="AM_Madness_Exalted"]</xpath>
		<value>
			<li Class="TraderGen.Ideo.PreceptGenExtension">
				<defs>
					<li>TG_Madness_Exalted</li>
				</defs>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/PreceptDef[defName="AM_NutrientPasteEating_Preferred"]</xpath>
		<value>
			<li Class="TraderGen.Ideo.PreceptGenExtension">
				<defs>
					<li>TG_NutrientPasteEating_Preferred</li>
				</defs>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/PreceptDef[defName="AM_OrganUse_Torturous"]</xpath>
		<value>
			<li Class="TraderGen.Ideo.PreceptGenExtension">
				<defs>
					<li>TG_OrganUse_Torturous</li>
				</defs>
			</li>
		</value>
	</Operation>
</Patch>
