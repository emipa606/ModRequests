<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ================================== Helmets ====================================-->

  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_LeatherHelmet</defName>
    <label>leather helmet</label>
    <description>Thick patches of leather sewn into a protective covering for the head.</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <graphicData>
      <texPath>LeatherHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.2</Mass>
      <Flammability>0.4</Flammability>
      <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.4</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <costList>
      <Cloth>5</Cloth>
    </costList>
    <apparel>
			<bodyPartGroups>
        			<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>LeatherHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
	<tags>
        <li>Neolithic</li>
	<li>MedievalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
<colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>15</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.5,0.5,0.5)</min>
          <max>(1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

</Defs>