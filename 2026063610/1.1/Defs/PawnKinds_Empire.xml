<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--===================== Imperial Psykers =========================-->

  <PawnKindDef Name="ImperialPsykerBase" Abstract="True">
    <race>Human</race>
    <defaultFactionType>Empire</defaultFactionType>
    <maxGenerationAge>55</maxGenerationAge>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>ImperialFighter</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
    <royalTitleChance>1</royalTitleChance>
    <baseRecruitDifficulty>0.90</baseRecruitDifficulty>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>
    <combatPower>60</combatPower>
    <biocodeWeaponChance>1</biocodeWeaponChance>
    <apparelAllowHeadgearChance>0.5</apparelAllowHeadgearChance>
    <apparelMoney>1250~2500</apparelMoney>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <apparelTags>
      <li>RoyalCombatGear</li>
    </apparelTags>
    <apparelDisallowTags>
      <li>Western</li>
    </apparelDisallowTags>
    <apparelColor>(75,0,130)</apparelColor>
    <specificApparelRequirements>
      <li>
        <bodyPartGroup>Torso</bodyPartGroup>
        <alternateTagChoices>
          <li>
            <tag>Psychic</tag>
            <chance>0</chance>
          </li>
        </alternateTagChoices>
      </li>
    </specificApparelRequirements>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>1000~1500</techHediffsMoney>
    <techHediffsRequired>
      <li>DeathAcidifier</li>
    </techHediffsRequired>
    <techHediffsDisallowTags>
      <li>PainCauser</li>
    </techHediffsDisallowTags>
    <disallowedTraits>
      <li>Nudist</li>
      <li>Wimp</li>
      <li>Brawler</li>
      <li>PsychicSensitivity</li>
    </disallowedTraits>
  </PawnKindDef>

  <PawnKindDef ParentName="ImperialPsykerBase">
    <defName>Empire_Psyker_Neophyte</defName>
    <label>psyker neophyte</label>
    <titleSelectOne>
      <li>Yeoman</li>
      <li>Esquire</li>
    </titleSelectOne>
    <apparelTags>
      <li>IndustrialBasic</li>
      <li>IndustrialAdvanced</li>
      <li>IndustrialMilitaryBasic</li>
      <li>IndustrialMilitaryAdvanced</li>
    </apparelTags>
    <apparelColor>(221,160,221)</apparelColor>
    <combatPower>60</combatPower>
    <royalTitleChance>1</royalTitleChance>
    <chemicalAddictionChance>0.03</chemicalAddictionChance>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <weaponMoney>1000~3500</weaponMoney>
  </PawnKindDef>

  <PawnKindDef ParentName="ImperialPsykerBase">
    <defName>Empire_Psyker_Templar</defName>
    <label>psyker templar</label>
    <titleSelectOne>
      <li>Knight</li>
      <li>Praetor</li>
    </titleSelectOne>
    <royalTitleChance>1</royalTitleChance>
    <combatPower>150</combatPower>
    <chemicalAddictionChance>0.03</chemicalAddictionChance>
    <weaponMoney>1550~2700</weaponMoney>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>GrenadeDestructive</li>
    </weaponTags>
    <apparelMoney>6000~9000</apparelMoney>
    <apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
    <apparelRequired>
      <li>Apparel_ArmorHelmetRecon</li>
      <li>Apparel_PsyfocusShirt</li>
      <li>Apparel_ArmorRecon</li>
    </apparelRequired>
    <apparelColor>(153,50,204)</apparelColor>
  </PawnKindDef>

  <PawnKindDef ParentName="ImperialPsykerBase">
    <defName>Empire_Psyker_Lord</defName>
    <label>psyker lord</label>
    <titleRequired>Baron</titleRequired>
    <apparelMoney>9999999</apparelMoney>
    <apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
    <weaponTags>
      <li>CloseRangePsykerGun</li>
      <li>GrenadeDestructive</li>
    </weaponTags>
    <apparelRequired>
      <li>Apparel_PsyfocusShirt</li>
    </apparelRequired>
    <weaponMoney>15000</weaponMoney>
    <combatPower>300</combatPower>
  </PawnKindDef>

  <PawnKindDef ParentName="ImperialPsykerBase">
    <defName>Empire_Psyker_Grandmaster</defName>
    <label>psyker grandmaster</label>
    <labelFemale>psyker grandmistress</labelFemale>
    <titleRequired>Count</titleRequired>
    <apparelMoney>9999999</apparelMoney>
    <apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
    <weaponTags>
      <li>CloseRangePsykerGun</li>
      <li>GrenadeDestructive</li>
    </weaponTags>
    <apparelRequired>
      <li>Apparel_PsyfocusShirt</li>
    </apparelRequired>
    <weaponMoney>20000</weaponMoney>
    <itemQuality>Excellent</itemQuality>
    <combatPower>300</combatPower>
    <skills>
      <li>
        <skill>Melee</skill>
        <range>4~10</range>
      </li>
    </skills>
  </PawnKindDef>

</Defs>
