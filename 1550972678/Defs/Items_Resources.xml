<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="ResourceBase_Wire" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>75</stackLimit>
		<statBases>
			<Beauty>-4</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>20</pathCost>
	</ThingDef>

	<ThingDef ParentName="ResourceBase_Wire">
		<defName>HBarrierShell</defName>
		<label>H-barrier cell</label>
		<description>An empty and compacted H-barrier. Lightweight and portable, it can quickly be erected and packed with earth to provide a structural or defensive wall, and can be taken down and packed up just as quickly.</description>
		<graphicData>
			<texPath>HBarriers/Item</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		    <drawSize>0.80</drawSize>					
		</graphicData>
		<stackLimit>50</stackLimit>
		<statBases>
			<DeteriorationRate>0</DeteriorationRate>
			<MarketValue>15.0</MarketValue>
			<Mass>2.0</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>
	
	<ThingDef ParentName="ResourceBase_Wire">
		<defName>RazorWire</defName>
		<label>Concertina Wire</label>
		<description>A coil of steel concertina wire, with long, sharp barbs to deter intruders. Capable of being deployed as a self-supporting wire obstacle or being used to construct more formidable defenses. Handle with gloves.</description>
		<graphicData>
			<drawSize>0.80</drawSize>
			<texPath>RazorWire/Spool_Wire</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stackLimit>75</stackLimit>
		<statBases>
			<DeteriorationRate>0</DeteriorationRate>
			<MarketValue>3.5</MarketValue>
			<Mass>0.80</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="ResourceBase_Wire">
		<defName>M14Mine</defName>
		<label>M14 Mine (Unarmed)</label>
		<description>A small, lightweight anti-personnel mine. Should be stored some place dry and secure.</description>
		<graphicData>
			<texPath>Landmines/M14</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<stackLimit>25</stackLimit>
		<statBases>
			<DeteriorationRate>0</DeteriorationRate>
			<MarketValue>10.0</MarketValue>
			<Mass>0.5</Mass>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>	
	
</Defs>
