<Patch>
<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_TF_FlakVest_Grenade"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>2.5</WornBulk>
			<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>16</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_TF_FlakVest_Grenade"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>13</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Apparel_TF_FlakVest_Grenade"]/statBases/ArmorRating_Heat</xpath>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_TF_FlakVest_Grenade"]/statBases/Mass</xpath>
		<value>
			<Mass>7</Mass>
		</value>
	</Operation>

	<!-- Partial armor coverage; collar is thinner. -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Apparel_TF_FlakVest_Grenade"]</xpath>
		<value>
		  <li Class="CombatExtended.PartialArmorExt">
			  <stats>
				  <li>
					<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
					<parts>
						<li>Neck</li>
					</parts>
				  </li>
				  <li>
					<ArmorRating_Blunt>0.80</ArmorRating_Blunt>
					<parts>
						<li>Neck</li>
					</parts>
				  </li>
			  </stats>
		  </li>
		</value>
	</Operation>

	<!-- Half the insulation of a regular jacket -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_TF_FlakVest_Grenade"]/statBases/Insulation_Cold</xpath>
		<value>
			<StuffEffectMultiplierInsulation_Cold>1</StuffEffectMultiplierInsulation_Cold>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_TF_FlakVest_Grenade"]/costList</xpath>
		<value>
			<!-- Circuit boards not included -->
			<costList>
				<Steel>100</Steel>
			</costList>
			<stuffCategories>
				<li>Fabric</li>
			</stuffCategories>
			<costStuffCount>90</costStuffCount>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Apparel_TF_FlakVest_Grenade"]/equippedStatOffsets</xpath>
	</Operation>
	
