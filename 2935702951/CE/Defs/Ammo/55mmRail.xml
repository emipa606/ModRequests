<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo55mmRailgun</defName>
		<label>5.5mm Railgun</label>
		<parent>AmmoAdvanced</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRailgunRifle</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_55mmRailgun</defName>
		<label>5.5mm Railgun</label>
		<ammoTypes>
			<Ammo_55mmRailgun_Sabot>Bullet_55mmRailgun_Sabot</Ammo_55mmRailgun_Sabot>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="SpacerSmallAmmoBase">
		<defName>Ammo_55mmRailgun_Sabot</defName>
		<label>5.5mm Railgun cartridge (Sabot)</label>
		<description>Fin-stabilized tungsten carbide penetrator with discarding sabot, designed for railgun rifles.</description>
		<statBases>
			<Mass>0.01</Mass>
			<Bulk>0.008</Bulk>
			<MarketValue>0.04</MarketValue>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
      		<li>CE_AutoEnableCrafting_FabricationBench</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
			<!-- Railgun ammo isn't handloaded because it contains no propellant, and the sabots must be precision-machined anyway -->
		</tradeTags>
		<thingCategories>
			<li>Ammo55mmRailgun</li>
		</thingCategories>
		<graphicData>
			<texPath>Things/Ammo/55mmRail</texPath>
			<graphicClass>CombatExtended.Graphic_StackCountRanged</graphicClass>
		</graphicData>
		<ammoClass>RailgunSabot</ammoClass>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef ParentName="BaseBulletCE">
		<defName>Bullet_55mmRailgun_Sabot</defName>
		<label>5.5mm Railgun bullet (Sabot)</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<armorPenetrationSharp>25</armorPenetrationSharp>
			<armorPenetrationBlunt>200.80</armorPenetrationBlunt>
			<speed>400</speed>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeAmmo_55mmRailgun_Sabot</defName>
		<label>make 5.5mm Railgun cartridge (Sabot) x500</label>
		<description>Craft 500 5.5mm Railgun (Sabot) cartridges.</description>
		<jobString>Making 5.5mm Railgun (Sabot) cartridges.</jobString>
		<workAmount>1000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_55mmRailgun_Sabot>500</Ammo_55mmRailgun_Sabot>
		</products>
	</RecipeDef>

</Defs>