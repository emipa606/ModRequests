<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>Plant_TF_Cotton</defName>
    <label>greycotton</label>
    <description>A genetic-modified cotton to withstand harsh environment. It can still grow at contaminated land, but as a cost, it only produces half as much as normal cotton.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/greycotton_mt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <growDays>6</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <pollution>PollutedOnly</pollution>
      <fertilityMin>0.50</fertilityMin>
      <fertilitySensitivity>0.0</fertilitySensitivity>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Cloth</harvestedThingDef>
      <harvestYield>5</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <immatureGraphicPath>Things/Plants/greycotton_imt</immatureGraphicPath>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>
</Defs>