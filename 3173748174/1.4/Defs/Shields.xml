<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef Name="DankPyon_BaseShield" ParentName="BaseMeleeWeapon_Blunt_Quality" Abstract="True">
        <techLevel>Medieval</techLevel>
        <thingCategories Inherit="False">
            <li>Apparel</li>
        </thingCategories>
        <equippedStatOffsets>
            <MeleeDodgeChance>2</MeleeDodgeChance>
        </equippedStatOffsets>
		<thingClass>VFECore.Apparel_Shield</thingClass>
		<apparel>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<bodyPartGroups>
                <li>Neck</li>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>VFEC_OuterShell</li>
			</layers>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
        <comps>
            <li>
                <compClass>CompColorable</compClass>
            </li>
        </comps>
        <equippedAngleOffset>-30</equippedAngleOffset>
        <tools>
            <li>
                <label>base</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>centre</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <modExtensions>
            <li Class="VFECore.ThingDefExtension">
                <useFactionColourForPawnKinds>

                </useFactionColourForPawnKinds>
            </li>
        </modExtensions>
    </ThingDef>
	
	<ThingDef ParentName="DankPyon_BaseShield" Name="LanenDarn_BaseShield" Abstract="True">
		<label>Greek Shield</label>
        <description>A great round shield covered with sheet metal..</description>
        <stuffCategories>
            <li>Woody</li>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>60</costStuffCount>
        <statBases>
            <MaxHitPoints>300</MaxHitPoints>
            <Flammability>1</Flammability>
            <StuffEffectMultiplierArmor>0.80</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
            <WorkToMake>4000</WorkToMake>
            <Mass>4</Mass>
        </statBases>
    </ThingDef>
	
