<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>LanenDarn_GreekClothing_Chiton</defName>
		<label>Chiton</label>
		<description>A simple piece of Clothing, fastened or tied at the shoulders and around the hips with a belt</description>
		<graphicData>
			<texPath>Apparel/Clothing/Chiton/IconChiton</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<recipeMaker>
            <researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
			<recipeUsers>
				<li>DankPyon_TailorsBench</li>
			</recipeUsers>
		</recipeMaker>
		
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>

		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		  </statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Clothing/Chiton/Chiton</wornGraphicPath>
			<tags>
			
            </tags>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>LanenDarn_GreekClothing_Chalmys</defName>
		<label>chalmys</label>
		<description>A cloak made from one great piece of cloth. Often fastened or tied over the shoulder.</description>
		<graphicData>
			<texPath>Apparel/Clothing/Chalmys/IconChalmys</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<recipeMaker>
            <researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
			<recipeUsers>
				<li>DankPyon_TailorsBench</li>
			</recipeUsers>
		</recipeMaker>
		
		<costStuffCount>50</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>

		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		  </statBases>
		<apparel>
			<bodyPartGroups>
                <li>Neck</li>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Clothing/Chalmys/Chalmys</wornGraphicPath>
			<tags>
			
            </tags>
			<layers>
                <li>Shell</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

</Defs>
