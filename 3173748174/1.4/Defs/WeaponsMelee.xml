	<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>LanenDarn_GreekWeapon_DoruSpear</defName>
    <label>doru spear</label>
    <description>A greek spear called 'Doru' or 'Dory', commonly used by Hoplites.</description>
    <graphicData>
      <texPath>Weapons/Spear_Doru</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </graphicData>
    <uiIconScale>1.2</uiIconScale>
    <techLevel>Medieval</techLevel>
	<equippedAngleOffset>45</equippedAngleOffset>	

    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>2</Mass>
    </statBases>

    <costStuffCount>20</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costList>
      <WoodLog>30</WoodLog>
    </costList>

    <weaponTags>
    </weaponTags>

    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>21</power>
        <cooldownTime>3</cooldownTime>
        <armorPenetration>0.32</armorPenetration>
      </li>
    </tools>
	  <recipeMaker>
      <researchPrerequisite>DankPyon_BasicPolearms</researchPrerequisite>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      </recipeMaker>

    <modExtensions>
      <li Class="VFECore.ThingDefExtension">
        <usableWithShields>true</usableWithShields>
		<weaponDraftedDrawOffsets>
			<north>
				<drawOffset>(0.34,0,0.30)</drawOffset>
				<angleOffset>-143</angleOffset>
			</north>
			<east>
				<drawOffset>(0.1,0,0.30)</drawOffset>
				<angleOffset>-122</angleOffset>
			</east>
			<south>
