<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>LanenDarn_LinoThorax</defName>
		<label>Linothorax</label>
		<description>An Ancient Armor made out of multiple layers of Linen glued together.</description>
		<graphicData>
			<texPath>Apparel/Armor/Linothorax/IconLinothorax</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
			<li>TailoringBench</li>
			<li>CraftingSpot</li>
			<researchPrerequisite>LanenDarn_Linothorax</researchPrerequisite>
		</recipeMaker>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<statBases>
			<WorkToMake>3800</WorkToMake>
			<MaxHitPoints>300</MaxHitPoints>
			<Mass>3.5</Mass>
			<StuffEffectMultiplierArmor>0.80</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>4</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>15</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.1</MoveSpeed>
		</equippedStatOffsets>
		<techLevel>Neolithic</techLevel>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Armor/Linothorax/Lino</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

