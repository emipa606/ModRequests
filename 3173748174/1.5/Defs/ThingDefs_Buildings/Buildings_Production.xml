<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BenchBase">
		<defName>LanenDarn_AncientAnvil</defName>
		<label>Simple Anvil</label>
		<description>A simple Anvil, cast from what ever metals you have at hand.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Production/AncientAnvil/AncientAnvil</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.1,1.1)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>1500</WorkToBuild>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0</Flammability>
			<Mass>45</Mass>
		</statBases>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
				</linkableFacilities>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>LanenDarn_CopperSmelting</li>
		</researchPrerequisites>
		<techLevel>Neolithic</techLevel>
	</ThingDef>

	<ThingDef ParentName="BenchBase" Name="LanenDarn_WorkbenchBase" Abstract="True">
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(3,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<techLevel>Neolithic</techLevel>
		<placeWorkers>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
	</ThingDef>

	<ThingDef ParentName="LanenDarn_WorkbenchBase">
		<defName>LanenDarn_ShieldEasel</defName>
		<label>Shield Easel</label>
		<description>A simple Table and Easel to paint Metal Hoplons on.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Production/ShieldEastle/ShieldPaintingTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3.5,1.5)</drawSize>
			<shadowData>
				<volume>(2.8, 0.35, 0.59)</volume>
				<offset>(0, 0, 0.08)</offset>
			</shadowData>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
				</linkableFacilities>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>LanenDarn_BaseHoplons</li>
		</researchPrerequisites>
	</ThingDef>

</Defs>