<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Muzzle Flash</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="Gun_ICW_ChargeLMG"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1.3,1.5)</drawSize>
							<offsets>
								<li>(0.5,0)</li>
							</offsets>
						</li>
					</value>
				</li>

				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="Gun_ICW_AdvChargeRifle"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1,1)</drawSize>
							<offsets>
								<li>(0.4,0)</li>
							</offsets>
						</li>
					</value>
				</li>

				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="Gun_ICW_ChargeSG"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1,1)</drawSize>
							<offsets>
								<li>(0.5,0)</li>
							</offsets>
						</li>
					</value>
				</li>

				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="Gun_ICW_ChargeSR"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1,1)</drawSize>
							<offsets>
								<li>(0,0)</li>
							</offsets>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>