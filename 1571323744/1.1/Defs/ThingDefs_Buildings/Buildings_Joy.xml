<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>CrystalChime</defName>
    <label>chime crystal</label>
	<thingClass>Building</thingClass>
    <description>Crystal that plays a soothing chime under its own power. Offers meditative joy.</description>
    <graphicData>
      <texPath>Things/Building/Special/PrismChime</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.08, 0.2, 0.08)</volume>
        <offset>(0, 0, -0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0.3,0.3,0.4,0.4)</rect>
      </damageData>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <minTechLevelToBuild>Medieval</minTechLevelToBuild>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>130</WorkToBuild>
      <Mass>3</Mass>
      <Flammability>0.5</Flammability>
      <JoyGainFactor>1.2</JoyGainFactor>
    </statBases>
    <costList>
      <Crystal>20</Crystal>
    </costList>
    <building>
      <joyKind>Meditative</joyKind>
      <watchBuildingStandDistanceRange>
        <min>3</min>
        <max>3</max>
      </watchBuildingStandDistanceRange>
	  <watchBuildingStandRectWidth>3</watchBuildingStandRectWidth>
	  <soundAmbient>Chime_Ambience</soundAmbient>
    </building>
    <pathCost>10</pathCost>
    <designationCategory>Joy</designationCategory>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>

  
</Defs>
