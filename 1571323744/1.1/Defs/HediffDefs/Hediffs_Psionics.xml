      </li>
	  <li>
        <label>Class 6</label>
        <minSeverity>7</minSeverity>
		<painFactor>1.35</painFactor>
		<statFactors>
          <PsychicEntropyMax>3.0</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>7</PsychicEntropyRecoveryRate>
        </statFactors>
		<statOffsets>
		  <PsychicSensitivity>1.05</PsychicSensitivity>
		  <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
		  <WorkSpeedGlobal>0.20</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.30</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>0.30</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.2</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <label>QuasiAscendant</label>
        <minSeverity>8</minSeverity>
		<painFactor>0.2</painFactor>
		<statFactors>
          <PsychicEntropyMax>3.5</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>10</PsychicEntropyRecoveryRate>
        </statFactors>
		<hungerRateFactorOffset>-0.50</hungerRateFactorOffset>
		<restFallFactor>0.50</restFallFactor>
		<statOffsets>
		  <PsychicSensitivity>2</PsychicSensitivity>
		  <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
