<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef Name="CrystalPsionicBase" Abstract="True">
    <hediffClass>Crystalloids.Hediff_CrystalPsionics</hediffClass>
    <defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
	<initialSeverity>0.001</initialSeverity>
	<isBad>false</isBad>
  </HediffDef>
  
  
  <HediffDef ParentName="CrystalPsionicBase">
    <defName>CrystalPsionics</defName>
    <label>Psionic</label>
	<description>This pawn is naturally psionic and can tap into latent psionic fields to preform psycasts. Their ability to do so grows with age, chance, or through the use of Psimutare.</description>
	<initialSeverity>1</initialSeverity>
	<minSeverity>1</minSeverity>
    <maxSeverity>9</maxSeverity>
	<comps>
      <li Class="HediffCompProperties_Immunizable">
	    <severityPerDayNotImmune>0.0020650</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>
          <min>0.75</min>
          <max>1.65</max>
        </severityPerDayNotImmuneRandomFactor>
      </li>
    </comps>
    <stages>
      <li>
        <label>Emergent</label>
		<painFactor>1.05</painFactor>
		<statFactors>
          <PsychicEntropyMax>1</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>4</PsychicEntropyRecoveryRate>
        </statFactors>
		<statOffsets>
		  <PsychicSensitivity>0.15</PsychicSensitivity>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.025</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Class 1</label>
        <minSeverity>2</minSeverity>
		<painFactor>1.1</painFactor>
		<statFactors>
          <PsychicEntropyMax>1.334</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>4.5</PsychicEntropyRecoveryRate>
        </statFactors>
		<statOffsets>
		  <PsychicSensitivity>0.30</PsychicSensitivity>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Class 2</label>
        <minSeverity>3</minSeverity>
		<painFactor>1.15</painFactor>
		<statFactors>
          <PsychicEntropyMax>1.6667</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>5</PsychicEntropyRecoveryRate>
        </statFactors>
		<statOffsets>
		  <PsychicSensitivity>0.45</PsychicSensitivity>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Class 3</label>
        <minSeverity>4</minSeverity>
		<painFactor>1.2</painFactor>
		<statFactors>
          <PsychicEntropyMax>2.0</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>5.5</PsychicEntropyRecoveryRate>
        </statFactors>
		<statOffsets>
		  <PsychicSensitivity>0.60</PsychicSensitivity>
		  <ArmorRating_Blunt>0.02</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.02</ArmorRating_Sharp>
		  <WorkSpeedGlobal>0.05</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>0.15</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <label>Class 4</label>
        <minSeverity>5</minSeverity>
		<painFactor>1.25</painFactor>
		<statFactors>
          <PsychicEntropyMax>2.3334</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>6</PsychicEntropyRecoveryRate>
        </statFactors>
		<statOffsets>
		  <PsychicSensitivity>0.75</PsychicSensitivity>
		  <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
