          <PsychicEntropyMax>4</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>14</PsychicEntropyRecoveryRate>
        </statFactors>
		<hungerRateFactorOffset>-0.99</hungerRateFactorOffset>
		<restFallFactor>0</restFallFactor>
		<statOffsets>
		  <PsychicSensitivity>3</PsychicSensitivity>
		  <ArmorRating_Blunt>1.2</ArmorRating_Blunt>
          <ArmorRating_Sharp>1.2</ArmorRating_Sharp>
	      <MentalBreakThreshold>-20</MentalBreakThreshold>
		  <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>2</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>2</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>1.5</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  

</Defs>