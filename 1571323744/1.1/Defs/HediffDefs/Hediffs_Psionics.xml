		<statFactors>
          <PsychicEntropyMax>2.6667</PsychicEntropyMax>
          <PsychicEntropyRecoveryRate>6.5</PsychicEntropyRecoveryRate>
        </statFactors>
		<statOffsets>
		  <PsychicSensitivity>0.90</PsychicSensitivity>
		  <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
