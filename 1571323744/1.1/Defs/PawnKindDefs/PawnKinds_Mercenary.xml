<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <PawnKindDef Name="CrystalMercenaryBase" Abstract="True">
    <race>Alien_Crystalloid</race>
    <defaultFactionType>Pirate</defaultFactionType>
    <backstoryFiltersOverride>
            <li>
                <categories>
                    <li>CrystalloidRen</li>
                </categories>
            </li>
	</backstoryFiltersOverride>
    <chemicalAddictionChance>0.1</chemicalAddictionChance>
    <invNutrition>2.55</invNutrition>
    <itemQuality>Normal</itemQuality>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <maxGenerationAge>200</maxGenerationAge>
    <combatEnhancingDrugsChance>0.15</combatEnhancingDrugsChance>
    <combatEnhancingDrugsCount>
      <min>0</min>
      <max>2</max>
    </combatEnhancingDrugsCount>
  </PawnKindDef>

  <!-- Mid merc tier - gunner, slasher, sniper, heavy -->

  <PawnKindDef ParentName="CrystalMercenaryBase" Name="CrystalMercenaryMidTierBase" Abstract="True">
    <techHediffsChance>0.15</techHediffsChance>
    <techHediffsMoney>
      <min>700</min>
      <max>1200</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Simple</li>
      <li>Advanced</li>
    </techHediffsTags>
  </PawnKindDef>

    <PawnKindDef ParentName="CrystalMercenaryMidTierBase">
    <defName>CrystalloidMercenary_Gunner</defName>
    <label>mercenary gunner</label>
    <combatPower>90</combatPower>
    <gearHealthRange>
      <min>0.7</min>
      <max>3.2</max>
    </gearHealthRange>
    <apparelTags>
      <li>IndustrialBasic</li>
      <li>IndustrialAdvanced</li>
      <li>IndustrialMilitaryBasic</li>
      <li>IndustrialMilitaryAdvanced</li>
      <li>BeltDefensePop</li>
    </apparelTags>
    <apparelMoney>
      <min>1000</min>
      <max>1500</max>
    </apparelMoney>
    <apparelAllowHeadgearChance>0.5</apparelAllowHeadgearChance>
    <weaponMoney>
      <min>330</min>
      <max>650</max>
    </weaponMoney>
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
    <combatEnhancingDrugsChance>0.05</combatEnhancingDrugsChance>
    <combatEnhancingDrugsCount>
      <min>0</min>
      <max>2</max>
    </combatEnhancingDrugsCount>
    <inventoryOptions>
      <skipChance>0.8</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>50</min>
            <max>200</max>
          </countRange>
        </li>
        <li>
          <thingDef>MedicineIndustrial</thingDef>
          <countRange>
            <min>1</min>
            <max>1</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>

