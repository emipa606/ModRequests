<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <PawnKindDef Name="CrystalPirateBase" Abstract="True">
    <race>Alien_Crystalloid</race>
    <defaultFactionType>Pirate</defaultFactionType>
	<maxGenerationAge>73</maxGenerationAge>
    <backstoryFiltersOverride>
            <li>
                <categories>
                    <li>Raider</li>
                </categories>
            </li>
	</backstoryFiltersOverride>
    <chemicalAddictionChance>0.12</chemicalAddictionChance>
    <backstoryCryptosleepCommonality>0.05</backstoryCryptosleepCommonality>
    <invNutrition>2.55</invNutrition>
	<initialWillRange>1~4</initialWillRange>
    <initialResistanceRange>12~28</initialResistanceRange>
	<!--<xenotypeSet>
      <xenotypeChances>
        <Biolithic MayRequire="Ludeon.RimWorld.Biotech">999</Biolithic>
      </xenotypeChances>
	  <warnIfTotalAbove1>false</warnIfTotalAbove1>
    </xenotypeSet>-->
  </PawnKindDef>

  <!-- Low tier - scavenger, thrasher -->

  <PawnKindDef ParentName="CrystalPirateBase" Name="CrystalPirateScavTierBase" Abstract="True">
    <combatPower>45</combatPower>
    <backstoryCryptosleepCommonality>0.05</backstoryCryptosleepCommonality>
    <itemQuality>Poor</itemQuality>
    <apparelTags>
      <li>IndustrialBasic</li>
      <li>IndustrialAdvanced</li>
    </apparelTags>
    <gearHealthRange>
      <min>0.4</min>
      <max>1.1</max>
    </gearHealthRange>
    <apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
    <techHediffsMoney>
      <min>50</min>
      <max>50</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <techHediffsChance>0.03</techHediffsChance>
    <inventoryOptions>
      <skipChance>0.9</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>25</min>
            <max>50</max>
          </countRange>
        </li>
        <li>
          <thingDef>MedicineIndustrial</thingDef>
          <countRange>
            <min>1</min>
            <max>1</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
	<initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>12~24</initialResistanceRange>
  </PawnKindDef>
  
  <PawnKindDef ParentName="CrystalPirateScavTierBase">
    <defName>CrystalloidScavenger</defName>
    <label>scavenger gunner</label>
    <apparelMoney>
      <min>300</min>
      <max>500</max>
    </apparelMoney>
    <weaponMoney>
      <min>200</min>
      <max>300</max>
    </weaponMoney>
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
  </PawnKindDef>

  <PawnKindDef ParentName="CrystalPirateScavTierBase">
    <defName>ValkyrieThrasher</defName>
    <label>scavenger thrasher</label>
    <race>Alien_CrystalValkyrie</race>
	<backstoryFiltersOverride>
            <li>
                <categories>
                    <li>Valkyrie</li>
                </categories>
            </li>
	</backstoryFiltersOverride>
    <canBeSapper>true</canBeSapper>
    <apparelMoney>
      <min>300</min>
      <max>800</max>
    </apparelMoney>
    <apparelTags>
      <li>Outlander</li>
		</apparelTags>
    <weaponMoney>
      <min>100</min>
      <max>160</max>
    </weaponMoney>
    <weaponTags>
      <li>NeolithicMeleeBasic</li>
      <li>MedievalMeleeBasic</li>
      <li>MedievalMeleeDecent</li>
    </weaponTags>
  </PawnKindDef>

  <!-- Mid tier - pirate -->

  <PawnKindDef ParentName="CrystalPirateBase">
    <defName>CrystalloidPirate</defName>
    <label>pirate gunner</label>
    <race>Alien_Crystalloid</race>
    <combatPower>65</combatPower>
    <maxGenerationAge>75</maxGenerationAge>
    <gearHealthRange>
      <min>0.7</min>
      <max>2.3</max>
    </gearHealthRange>
    <apparelMoney>
      <min>400</min>
      <max>1000</max>
    </apparelMoney>
    <apparelTags>
      <li>IndustrialBasic</li>
      <li>IndustrialAdvanced</li>
      <li>IndustrialMilitaryBasic</li>
      <li>IndustrialMilitaryAdvanced</li>
    </apparelTags>
    <apparelAllowHeadgearChance>0.7</apparelAllowHeadgearChance>
    <weaponMoney>
      <min>250</min>
      <max>345</max>
    </weaponMoney>
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
    <techHediffsChance>0.04</techHediffsChance>
    <techHediffsMoney>
      <min>50</min>
      <max>800</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
      <li>Simple</li>
    </techHediffsTags>
    <inventoryOptions>
      <skipChance>0.8</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>40</min>
            <max>80</max>
          </countRange>
        </li>
        <li>
          <thingDef>MedicineIndustrial</thingDef>
          <countRange>
            <min>1</min>
            <max>1</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>

</Defs>
