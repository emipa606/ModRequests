<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef ParentName="GeneHairColorBase">
    <defName>Hair_CrystallinePurple</defName>
    <label>crystalline purple hair</label>
    <hairColorOverride>(99, 74, 196)</hairColorOverride>
    <selectionWeight>0.005</selectionWeight>
    <displayOrderInCategory>501</displayOrderInCategory>
    <randomBrightnessFactor>0.12</randomBrightnessFactor>
  </GeneDef>
  
  <GeneDef ParentName="GeneHairColorBase">
    <defName>Hair_CrystallineBlue</defName>
    <label>crystalline blue hair</label>
    <hairColorOverride>(36, 99, 186)</hairColorOverride>
    <selectionWeight>0.005</selectionWeight>
    <displayOrderInCategory>502</displayOrderInCategory>
    <randomBrightnessFactor>0.12</randomBrightnessFactor>
  </GeneDef>

  <GeneDef>
    <defName>AttunementGene</defName>
    <label>crystalline attunement</label>
    <labelShortAdj>attuned</labelShortAdj>
    <description>Carriers of this gene are able to channel a greater connection to the psychic ether through the metaphysical properties of crystalline matter present in their bodies, making them more psychically-sensitive.</description>
    <iconPath>UI/Genes/Attunement</iconPath>
    <displayCategory>Psychic</displayCategory>
    <displayOrderInCategory>60</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>Attunement</def>
      </li>
    </forcedTraits>
    <biostatMet>-1</biostatMet>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>lithic</symbol></li>
        <li><symbol>crysto</symbol></li>
        <li><symbol>attune</symbol></li>
      </prefixSymbols>
    </symbolPack>
  </GeneDef>
  
</Defs>