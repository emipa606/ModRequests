<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[1]/options</xpath>  <!-- Outlander "normal" group -->
		<value>
			<CrystalloidVillager>2</CrystalloidVillager>    <!-- Pawnkinds from your race, keep points down low to avoid making your pawns a majority -->
			<ValkyrieVillager>1</ValkyrieVillager> 
			<CrystalloidTown_Guard>3</CrystalloidTown_Guard>
			<ValkyrieTown_Guard>1</ValkyrieTown_Guard>
			<ValkyrieMercenary_Slasher>1</ValkyrieMercenary_Slasher>
			<CrystalloidMercenary_Gunner>3</CrystalloidMercenary_Gunner>      <!-- The more rare, the lower your points should be -->
		</value>
	</Operation> 
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[2]/options</xpath>  <!-- Outlander "peace" group -->
		<value>
			<CrystalloidVillager>2</CrystalloidVillager>
			<ValkyrieVillager>1</ValkyrieVillager> 
		</value>
	</Operation> 
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[3]/guards</xpath>  <!-- Outlander Caravan guard group -->
		<value>
			<CrystalloidVillager>2</CrystalloidVillager>
			<ValkyrieVillager>1</ValkyrieVillager> 
			<CrystalloidTown_Guard>3</CrystalloidTown_Guard>
			<ValkyrieTown_Guard>1</ValkyrieTown_Guard>
			<ValkyrieMercenary_Slasher>1</ValkyrieMercenary_Slasher>
			<CrystalloidMercenary_Gunner>3</CrystalloidMercenary_Gunner>
		</value>
	</Operation> 

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[4]/options</xpath>  <!-- Outlander base group -->
		<value>
			<CrystalloidVillager>2</CrystalloidVillager>
			<ValkyrieVillager>1</ValkyrieVillager> 
			<CrystalloidTown_Guard>3</CrystalloidTown_Guard>
			<ValkyrieTown_Guard>1</ValkyrieTown_Guard>
			<ValkyrieMercenary_Slasher>1</ValkyrieMercenary_Slasher>
			<CrystalloidMercenary_Gunner>3</CrystalloidMercenary_Gunner>
		</value>
	</Operation> 
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li[1]/options</xpath>  <!-- Pirate "normal" group -->
		<value>
			<ValkyrieThrasher>1</ValkyrieThrasher>
            <CrystalloidScavenger>3</CrystalloidScavenger>
            <CrystalloidPirate>4</CrystalloidPirate>
            <CrystalloidMercenary_Gunner>4</CrystalloidMercenary_Gunner>
            <ValkyrieMercenary_Heavy>1</ValkyrieMercenary_Heavy>
            <ValkyrieMercenary_Slasher>2</ValkyrieMercenary_Slasher>
		</value>
	</Operation> 
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li[2]/options</xpath>  <!-- Pirate "normal" melee only group -->
		<value>
			<ValkyrieThrasher>1</ValkyrieThrasher> <!-- Pirate melee group only has 3 human pawnkinds, I kept values very low to prevent overpopulating with my race -->
			<ValkyrieMercenary_Slasher>2</ValkyrieMercenary_Slasher>
		</value>
	</Operation> 
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li[3]/options</xpath>  <!-- Pirate "ranged" group -->
		<value>
            <CrystalloidScavenger>3</CrystalloidScavenger>
            <CrystalloidPirate>4</CrystalloidPirate>
            <CrystalloidMercenary_Gunner>4</CrystalloidMercenary_Gunner>
            <ValkyrieMercenary_Heavy>2</ValkyrieMercenary_Heavy>
			<CrystalloidMercenary_Sniper>2</CrystalloidMercenary_Sniper>
		</value>
	</Operation> 
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li[4]/options</xpath>  <!-- Pirate "special" group -->
		<value>
            <CrystalloidMercenary_Gunner>4</CrystalloidMercenary_Gunner>
            <ValkyrieMercenary_Heavy>2</ValkyrieMercenary_Heavy>
			<CrystalloidMercenary_Sniper>2</CrystalloidMercenary_Sniper>
		</value>
	</Operation> 
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li[5]/options</xpath>  <!-- Pirate "sniper" group -->
		<value>
			<CrystalloidMercenary_Sniper>2</CrystalloidMercenary_Sniper>
		</value>
	</Operation> 
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li[7]/options</xpath>  <!-- Pirate base group -->
		<value>
			<ValkyrieThrasher>1</ValkyrieThrasher>
            <CrystalloidScavenger>3</CrystalloidScavenger>
            <CrystalloidPirate>4</CrystalloidPirate>
            <CrystalloidMercenary_Gunner>4</CrystalloidMercenary_Gunner>
            <ValkyrieMercenary_Heavy>1</ValkyrieMercenary_Heavy>
            <ValkyrieMercenary_Slasher>2</ValkyrieMercenary_Slasher>
		</value>
	</Operation> 
	
</Patch>