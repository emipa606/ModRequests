<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>CrystallineChunk</defName>
    <label>crystal chunk</label>
    <description>A large mass of stabilized crystal of psychic origin. It can be dismantled for some crystal material, or further manipulated by psycasts for other purposes.</description>
    <category>Building</category>
    <graphicData>
      <texPath>Things/CrystalChunk</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0.0, 0.0, -0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0,0.75,1.0,0.5)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>55</pathCost>
    <blockWind>true</blockWind>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.50</fillPercent>
    <size>(1,1)</size>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>3</Beauty>
      <WorkToBuild>12000</WorkToBuild>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <costList>
      <Crystal>30</Crystal>
    </costList>
    <building>
      <alwaysDeconstructible>true</alwaysDeconstructible>
    </building>
    <selectable>true</selectable>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <repairEffect>ConstructMetal</repairEffect>
	<comps>
		<li Class="CompProperties_Glower">
			<glowRadius>2</glowRadius>
			<glowColor>(255,255,255,0)</glowColor>
		</li>
	</comps>
  </ThingDef>

</Defs>