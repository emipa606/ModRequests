<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="CrystalResourceBase" Abstract="True">
	  <thingClass>ThingWithComps</thingClass>
	  <category>Item</category>
	  <resourceReadoutPriority>Middle</resourceReadoutPriority>
	  <useHitPoints>true</useHitPoints>
	  <selectable>true</selectable>
	  <altitudeLayer>Item</altitudeLayer>
	  <stackLimit>75</stackLimit>
		<statBases>
			<Beauty>-4</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
	  <alwaysHaulable>true</alwaysHaulable>
	  <drawGUIOverlay>true</drawGUIOverlay>
	  <rotatable>false</rotatable>
	  <pathCost>15</pathCost>
  </ThingDef>

  <StuffCategoryDef>
     <defName>Crystalline</defName>
      <label>crystalline</label>
  </StuffCategoryDef>

  <ThingDef ParentName="CrystalResourceBase">
    <defName>Crystal</defName>
    <label>crystal</label>
    <description>Raw crystalline material ready to be used for construction or refined further. It is a unique and peculiar organomineralized silicon based material, the unit cell of the crystalline structure is configured and rearranged only by psychic energy. Raw crystal is lightweight and hard, and psychic energy can flow though it to some degree.</description>
    <graphicData>
	  <texPath>Things/Item/CrystalResource</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>2.1</MarketValue>
	  <Mass>0.3</Mass>
	  <StuffPower_Armor_Sharp>0.71</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.32</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.54</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.95</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.65</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
	<deepCommonality>0.20</deepCommonality>
	<deepCountPerPortion>35</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>20</min>
      <max>40</max>
    </deepLumpSizeRange>
    <stuffProps>
      <categories>
		<li>Crystalline</li>
      </categories>
	  <stuffAdjective>crystalline</stuffAdjective>
	  <commonality>0.125</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(97,69,181)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
	  <statOffsets>
	    <Beauty>1</Beauty>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>0.75</MaxHitPoints>
        <Beauty>2</Beauty>
        <Flammability>0.33</Flammability>
		<WorkToMake>0.8</WorkToMake>
		<WorkToBuild>0.8</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>1</MeleeWeapon_CooldownMultiplier>
		<DoorOpenSpeed>1</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
  </ThingDef>
  
  <ThingDef ParentName="RockBase">
    <defName>MineableCrystal</defName>
    <label>compacted crystal</label>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(97,69,181)</color>
      <colorTwo>(134,166,166)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1200</MaxHitPoints>
    </statBases>
    <description>Tightly packed deposit of organomineralized crystal</description>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>Crystal</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.10</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>4</min>
        <max>10</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
  
  <ThingDef ParentName="CrystalResourceBase">
    <defName>Crysteel</defName>
    <label>crysteel</label>
    <description>Panels of processed crystal that is subjected to a chemical treatment that strengthens and organizes the molecular bonds of the crystal. The result is a lightweight material with incredible strength, while maintaining its psychic affinity. The Ekrian Collective primarily uses crysteel to construct their weapons, buildings, and spaceships.</description>
    <graphicData>
	  <texPath>Things/Item/Crysteel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>8.0</MarketValue>
	  <Mass>0.15</Mass>
	  <StuffPower_Armor_Sharp>1.33</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.42</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.64</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>1.08</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.85</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Metallic</li>
		<li>Crystalline</li>
      </categories>
	  <commonality>0.1</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(144,144,212)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>2.3</MaxHitPoints>
        <Beauty>1.2</Beauty>
        <Flammability>0</Flammability>
		<WorkToMake>2.2</WorkToMake>
		<WorkToBuild>2.2</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>0.75</MeleeWeapon_CooldownMultiplier>
		<DoorOpenSpeed>1.2</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
  </ThingDef>
  
  
