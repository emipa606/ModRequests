      <Mass>4</Mass>
      <Beauty>8</Beauty>
	  <MaxHitPoints>325</MaxHitPoints>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <SellPriceFactor>0.25</SellPriceFactor>
