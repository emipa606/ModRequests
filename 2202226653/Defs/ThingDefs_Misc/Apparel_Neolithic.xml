        <generateCommonality>.001</generateCommonality>
    	<costList>
      		<Cloth>50</Cloth>
		<MedicineIndustrial>1</MedicineIndustrial>
    	</costList>
		<statBases>
			<MaxHitPoints>2</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
			<Mass>.20</Mass>
      			<Flammability>1.0</Flammability>
      			<DeteriorationRate>1</DeteriorationRate>
