            <EquipDelay>2</EquipDelay>
		</statBases>
    	<equippedStatOffsets>
		<ImmunityGainSpeed>.07</ImmunityGainSpeed>
      		<MedicalTendQualityOffset>0.1</MedicalTendQualityOffset>
    	</equippedStatOffsets>
		<thingCategories Inherit="False">
