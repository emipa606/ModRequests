<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ##### Neolithic ##### -->
    <!-- +++++ Body Wrap +++++ -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_Sarashi</defName>
		<label>Body wrap</label>
		<description>A long strip of cloth wrapped tightly around the chest. Good at resisting blunt trauma and provides a small boost to medical treatment. Be careful not to damage it.</description>
		<graphicData>
			<texPath>Things/Apparel/Sarashi/Sarashi</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tradeability>Sellable</tradeability>
        <generateCommonality>.001</generateCommonality>
    	<costList>
      		<Cloth>50</Cloth>
    	</costList>
		<statBases>
			<MaxHitPoints>2</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
			<Mass>.20</Mass>
      			<Flammability>1.0</Flammability>
      			<DeteriorationRate>1</DeteriorationRate>
			<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
			<ArmorRating_Blunt>.20</ArmorRating_Blunt>
			<ArmorRating_Heat>0</ArmorRating_Heat>
			<Insulation_Cold>0</Insulation_Cold>
 			<Insulation_Heat>0</Insulation_Heat>
            <EquipDelay>2</EquipDelay>
		</statBases>
    	<equippedStatOffsets>
      		<MedicalTendQualityOffset>0.1</MedicalTendQualityOffset>
    	</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Sarashi/Sarashi</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>Neolithic</li>
				<li>IndustrialBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
    </ThingDef>

