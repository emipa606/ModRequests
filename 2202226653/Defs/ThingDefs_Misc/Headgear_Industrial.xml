<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ##### Industrial ##### -->
    <!-- +++++ Head wrap +++++ -->
    <ThingDef ParentName="HatMakeableBase">
		<defName>Headgear_HeadBandage</defName>
		<label>Head wrap</label>
		<description>A long strip of cloth wrapped tightly around the head. Good at resisting blunt trauma and provides a small boost to medical treatment. Be careful not to damage it.</description>
		<graphicData>
			<texPath>Things/Headgear/HeadBandage/HeadBandage</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.001</generateCommonality>
    		<costList>
      			<Cloth>30</Cloth>
    		</costList>
		<statBases>
			<MaxHitPoints>2</MaxHitPoints>
			<WorkToMake>1300</WorkToMake>
			<Mass>.15</Mass>
      			<Flammability>1.0</Flammability>
      			<DeteriorationRate>1</DeteriorationRate>
			<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
			<ArmorRating_Blunt>.15</ArmorRating_Blunt>
			<ArmorRating_Heat>0</ArmorRating_Heat>
			<Insulation_Cold>0</Insulation_Cold>
 			<Insulation_Heat>0</Insulation_Heat>
            <EquipDelay>1.75</EquipDelay>
		</statBases>
    	<equippedStatOffsets>
      		<MedicalTendQualityOffset>0.05</MedicalTendQualityOffset>
		<ShootingAccuracyPawn>-0.1</ShootingAccuracyPawn>
    	</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>Headgear</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Headgear/HeadBandage/HeadBandage</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Neolithic</li>
				<li>IndustrialBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
    </ThingDef>

