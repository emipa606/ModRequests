<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================================= LongBoi ==================================== -->

  <ThingDef ParentName="AnimalThingBase">
    <defName>LongBoi</defName>
    <label>long boi</label>
    <devNote>cat-1</devNote>
    <description>Is a long boi. Is a good boy.</description>
    <statBases>
      <MoveSpeed>5.0</MoveSpeed>
      <MarketValue>250</MarketValue>
      <ComfyTemperatureMin>-30</ComfyTemperatureMin>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>8.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>8.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>14.2</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <animalType>Canine</animalType>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <petness>1</petness>
      <baseBodySize>2.25</baseBodySize>
      <baseHungerRate>0.5</baseHungerRate>
      <baseHealthScale>1.0</baseHealthScale>
      <foodType>OmnivoreAnimal, OvivoreAnimal</foodType>
      <leatherDef>Leather_Dog</leatherDef>
      <gestationPeriodDays>11</gestationPeriodDays>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
      <wildness>0</wildness>
      <nuzzleMtbHours>12</nuzzleMtbHours>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(3, 0.7)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>12</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.25</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Dog_Injured</soundWounded>
          <soundDeath>Pawn_Dog_Death</soundDeath>
          <soundCall>Pawn_Dog_Call</soundCall>
          <soundAngry>Pawn_Dog_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <headPosPerRotation>
        <li>(0.0, 0, 0.24)</li>
        <li>(0.28, 0, 0.14)</li>
        <li>(0.0, 0, -0.03)</li>
        <li>(-0.28, 0, 0.14)</li>
      </headPosPerRotation>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
      <li>AnimalPet</li>
    </tradeTags>
  </ThingDef>


  <PawnKindDef ParentName="AnimalKindBase">
    <defName>LongBoi</defName>
    <label>long boi</label>
    <race>LongBoi</race>
    <combatPower>75</combatPower>
    <ecoSystemWeight>0.6</ecoSystemWeight>
    <lifeStages>
      <li>
        <label>long boi puppy</label>
        <labelPlural>long boi puppies</labelPlural>
        <bodyGraphicData>
          <texPath>LongBoi/LongBoi</texPath>
          <drawSize>3</drawSize>
          <color>(220,198,160)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>LongBoi/Dessicated_LongBoi</texPath>
          <drawSize>4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>LongBoi/LongBoi</texPath>
          <drawSize>4</drawSize>
          <color>(220,198,160)</color>
          <shadowData>
            <volume>(0, 0, 0)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>LongBoi/Dessicated_LongBoi</texPath>
          <drawSize>5</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>LongBoi/LongBoi</texPath>
          <drawSize>5</drawSize>
          <color>(220,198,160)</color>
          <shadowData>
            <volume>(0, 0, 0)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>LongBoi/Dessicated_LongBoi</texPath>
          <drawSize>6</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

</Defs>
