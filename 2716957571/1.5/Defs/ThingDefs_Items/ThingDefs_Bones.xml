<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--========== HUMERUS ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Humerus</defName>
        <label>humerus</label>
        <description>The upper arm bone. It runs from the scapula to the elbow.</description>
        <descriptionHyperlinks><RecipeDef>TransplantHumanHumerus</RecipeDef></descriptionHyperlinks>
        <statBases>
            <MarketValue>150</MarketValue>
            <Mass>2.00</Mass>
        </statBases>
    </ThingDef>

    <!--========== RADIUS ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Radius</defName>
        <label>radius</label>
        <description>One of two forearm bones. Aids in wrist articulation and is connected to the humerus above.</description>
        <descriptionHyperlinks><RecipeDef>TransplantHumanRadius</RecipeDef></descriptionHyperlinks>
        <statBases>
            <MarketValue>110</MarketValue>
            <Mass>1.25</Mass>
        </statBases>
    </ThingDef>

    <!--========== ULNA ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Ulna</defName>
        <label>ulna</label>
        <description>The thinner of the forearm bones. Aids in arm rotation in conjunction with the wrist and is connected to the humerus above.</description>
        <descriptionHyperlinks><RecipeDef>TransplantHumanUlna</RecipeDef></descriptionHyperlinks>
        <statBases>
            <MarketValue>110</MarketValue>
            <Mass>1.10</Mass>
        </statBases>
    </ThingDef>

    <!--========== FEMUR ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Femur</defName>
        <label>femur</label>
        <description>The longest, heaviest, and strongest bone in the body. It supports stability and is weight bearing.</description>
        <descriptionHyperlinks><RecipeDef>TransplantHumanFemur</RecipeDef></descriptionHyperlinks>
        <statBases>
            <MarketValue>175</MarketValue>
            <Mass>2.10</Mass>
        </statBases>
    </ThingDef>

    <!--========== PATELLA ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Patella</defName>
        <label>patella</label>
        <description>The patella, or knee cap, assists in the extension capacity of the leg.</description>
        <descriptionHyperlinks><RecipeDef>TransplantHumanPatella</RecipeDef></descriptionHyperlinks>
        <statBases>
            <MarketValue>50</MarketValue>
            <Mass>0.50</Mass>
        </statBases>
    </ThingDef>

    <!--========== TIBIA ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Tibia</defName>
        <label>tibia</label>
        <description>The second largest bone in the body. It aids in bearing the weight of the human body.</description>
        <descriptionHyperlinks><RecipeDef>TransplantHumanTibia</RecipeDef></descriptionHyperlinks>
        <statBases>
            <MarketValue>125</MarketValue>
            <Mass>1.50</Mass>
        </statBases>
    </ThingDef>

    <!--========== FIBULA ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Fibula</defName>
        <label>fibula</label>
        <description>This bone, in conjunction with the tibia, assists in the stability of the ankle joint.</description>
        <descriptionHyperlinks><RecipeDef>TransplantHumanFibula</RecipeDef></descriptionHyperlinks>
        <statBases>
            <MarketValue>125</MarketValue>
            <Mass>1.25</Mass>
        </statBases>
    </ThingDef>

    <!--========== RIB BONE ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_RibBone</defName>
        <label>rib bone</label>
        <description>Along and slender, yet hardy bone which supports the entire ribcage and creates the protective skeletal structure of the chest.</description>
        <statBases>
            <MarketValue>125</MarketValue>
            <Mass>1.00</Mass>
        </statBases>
    </ThingDef>

    <!--========== Vertebrae ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Vertebrae</defName>
        <label>vertebrae</label>
        <description>A strong and hardy bone, comprised of protein, collagen, and minerals, especially calcium. It supports the spinal column.</description>
        <statBases>
            <MarketValue>50</MarketValue>
            <Mass>0.05</Mass>
        </statBases>
    </ThingDef>

    <!--========== SACRUM ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Sacrum</defName>
        <label>sacrum</label>
        <description>The sacrum is a shield-shaped bony structure that is located at the base of the lumbar vertebrae and that is connected to the pelvis.</description>
        <statBases>
            <MarketValue>50</MarketValue>
            <Mass>0.15</Mass>
        </statBases>
    </ThingDef>

    <!--========== COCCYX ==========-->

    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>SZ_Coccyx</defName>
        <label>coccyx (tailbone)</label>
        <description>Also known as the tail bone, it is part of the "tripod". The tripod is a group of internal body parts that provide weight-bearing support in the seated position</description>
        <statBases>
            <MarketValue>50</MarketValue>
            <Mass>0.15</Mass>
        </statBases>
    </ThingDef>

</Defs>