<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!--========== REPLACE HUMAN BODY PATCH ==========-->
    <!-- Vanilla Human Pawns -->

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="Human"]/race/body</xpath>
        <value>
            <body>SZ_Homo_sapien</body>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Human"]/race/hediffGiverSets</xpath>
        <value>
            <li>SZ_BrittleBones</li>
        </value>
    </Operation>

</Patch>