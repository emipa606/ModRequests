<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- TRANQUILISER -->
  <HediffDef ParentName="DiseaseBase">
    <defName>LVE_TranquilliserHediff</defName>
    <label>tranquilliser</label>
    <description>Sleep drugs in the bloodstream. Tranquilliser renders creatures unconscious.</description>
    <isBad>false</isBad>
    <initialSeverity>0.1</initialSeverity>
    <maxSeverity>2.5</maxSeverity>
    
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>90000~180000</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.4</severityPerDay>
      </li>
    </comps>

    <stages>

      <li>
        <minSeverity>0.25</minSeverity>
        <label>light effect</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>

      <li>
        <minSeverity>0.5</minSeverity>
        <label>mild effect</label>
        <painFactor>0.15</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.6</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>

      <li>
        <minSeverity>0.9</minSeverity>
        <label>sedated</label>
        <painFactor>0</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
        </capMods>
      </li>

      </stages>
  </HediffDef>

<!-- PEPPER SPRAY -->
  <HediffDef ParentName="DiseaseBase">
    <defName>LVE_PepperSprayHediff</defName>
    <label>pepper sprayed</label>
    <description>Pepper spray causes a lot of pain and limits vision.</description>
    <isBad>true</isBad>
    <initialSeverity>0.1</initialSeverity>
    <maxSeverity>1.85</maxSeverity>
    
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>12000~120000</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-20</severityPerDay>
      </li>
    </comps>

    <stages>

      <li>
        <minSeverity>0.25</minSeverity>
        <label>mild</label>
         <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>

      <li>
        <minSeverity>0.5</minSeverity>
        <label>moderate</label>
        <painOffset>0.4</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.45</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.55</offset>
          </li>
        </capMods>
      </li>

      <li>
        <minSeverity>0.9</minSeverity>
        <label>severe</label>
        <painOffset>0.55</painOffset>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-1.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.2</setMax>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.75</offset>
          </li>
        </capMods>
      </li>

      <li>
        <minSeverity>1.5</minSeverity>
        <label>extreme</label>
        <painOffset>0.65</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.8</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-1</offset>
          </li>
        </capMods>
      </li>

      </stages>
  </HediffDef>

<!-- ElectroShock -->
  <HediffDef ParentName="DiseaseBase">
  <defName>LVE_ElectroshockHediff</defName>
  <label>electroshocked</label>
  <description>Struck by electroshock.</description>
  <isBad>true</isBad>
  <initialSeverity>0.1</initialSeverity>
  <maxSeverity>2</maxSeverity>
  
  <comps>
    <li Class="HediffCompProperties_Disappears">
      <disappearsAfterTicks>5000~10000</disappearsAfterTicks>
    </li>
    <li Class="HediffCompProperties_SeverityPerDay">
      <severityPerDay>-55</severityPerDay>
    </li>
  </comps>

  <stages>

    <li>
      <minSeverity>0.9</minSeverity>
      <label>wearing off</label>
       <painOffset>0.1</painOffset>
      <capMods>
        <li>
          <capacity>Moving</capacity>
          <offset>-0.35</offset>
        </li>
        <li>
          <capacity>Manipulation</capacity>
          <offset>-0.35</offset>
        </li>
      </capMods>
    </li>

    <li>
      <minSeverity>1.0</minSeverity>
      <label>stunned</label>
      <painOffset>0.45</painOffset>
      <capMods>
        <li>
          <capacity>Moving</capacity>
          <setMax>0.01</setMax>
        </li>
        <li>
          <capacity>Manipulation</capacity>
          <setMax>0.01</setMax>
        </li>
      </capMods>
    </li>

    </stages>
  </HediffDef>

</Defs>
