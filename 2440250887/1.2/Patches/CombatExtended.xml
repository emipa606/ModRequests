<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="PowerTool_IndustrialChainsaw"]/statBases/Mass</xpath>
					<value>
						<Mass>4</Mass>
						<Bulk>7</Bulk>
						<MeleeCounterParryBonus>0.15</MeleeCounterParryBonus>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="PowerTool_IndustrialChainsaw"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>steel razor chain</label>
								<capacities>
									<li>Cut</li>
								</capacities>
								<power>3</power>
								<cooldownTime>0.095</cooldownTime>
								<armorPenetrationSharp>3.5</armorPenetrationSharp>
								<!-- <linkedBodyPartsGroup>Chain</linkedBodyPartsGroup> -->
							</li>
						</tools>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="PowerTool_IndustrialGrinder"]/statBases/Mass</xpath>
					<value>
						<Mass>3</Mass>
						<Bulk>6</Bulk>
						<MeleeCounterParryBonus>0.05</MeleeCounterParryBonus>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="PowerTool_IndustrialGrinder"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>steel razor disc</label>
								<capacities>
									<li>Cut</li>
								</capacities>
								<power>4</power>
								<cooldownTime>0.25</cooldownTime>
								<armorPenetrationSharp>7.5</armorPenetrationSharp>
								<!-- <linkedBodyPartsGroup>Chain</linkedBodyPartsGroup> -->

							</li>
						</tools>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="PowerTool_IndustrialJackHammer"]/statBases/Mass</xpath>
					<value>
						<Mass>4</Mass>
						<Bulk>7</Bulk>
						<MeleeCounterParryBonus>0.15</MeleeCounterParryBonus>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="PowerTool_IndustrialJackHammer"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>moil point</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>9</power>
								<cooldownTime>0.5</cooldownTime>
								<armorPenetrationBlunt>12</armorPenetrationBlunt>
								<!-- <linkedBodyPartsGroup>Chain</linkedBodyPartsGroup> -->

							</li>
						</tools>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="PowerTool_IndustrialDrill"]/statBases/Mass</xpath>
					<value>
						<Mass>2</Mass>
						<Bulk>4</Bulk>
						<MeleeCounterParryBonus>0.05</MeleeCounterParryBonus>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="PowerTool_IndustrialDrill"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>screw drive</label>
								<capacities>
									<li>Stab</li>
								</capacities>
								<power>4</power>
								<cooldownTime>0.35</cooldownTime>
								<armorPenetrationSharp>4.5</armorPenetrationSharp>
								<!-- <linkedBodyPartsGroup>Chain</linkedBodyPartsGroup> -->
							</li>
						</tools>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
</Patch>
