<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Abstract="True" Name="MeleeWeaponMotor" ParentName="BaseWeapon">
    <techLevel>Industrial</techLevel>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
	<thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
	<recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
	  <researchPrerequisite>Machining</researchPrerequisite>
	  <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <smeltable>true</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="MeleeWeaponMotor">
    <defName>PowerTool_IndustrialChainsaw</defName>
    <label>chainsaw</label>
    <description>A powered saw equipped with a set of teeth attached to a rotating chain. Originally designed for cutting down trees but like many tools on the rim it can be a devistating weapon when used against fleshy opponents.</description>
    <graphicData>
      <texPath>WeaponMelee/IndustrialChainsaw</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<statBases>
      <Mass>6.5</Mass>
	  <WorkToMake>15000</WorkToMake>
    </statBases>
	<costList>
      <Steel>60</Steel>
	  <Chemfuel>40</Chemfuel>
      <ComponentIndustrial>7</ComponentIndustrial>
    </costList>
	<equippedStatOffsets>
      <PlantWorkSpeed>0.80</PlantWorkSpeed>
	  <MoveSpeed>-0.25</MoveSpeed>
    </equippedStatOffsets>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>10</power>
        <cooldownTime>0.8</cooldownTime>
		<armorPenetration>0</armorPenetration>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.2</cooldownTime>
		<armorPenetration>0</armorPenetration>
      </li>
    </tools>
	<weaponTags>
      <li>PowerTool</li>
	  <li>Chainsaw</li>
    </weaponTags>
  </ThingDef>
  
  <ThingDef ParentName="MeleeWeaponMotor">
    <defName>PowerTool_IndustrialGrinder</defName>
    <label>grinder</label>
    <description>A powered rotating disc used for cutting through metal. Scrappers commonly use these to cut through the thick chasis of old fallen mechanoids.</description>
    <graphicData>
      <texPath>WeaponMelee/IndustrialGrinder</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<statBases>
      <Mass>4.5</Mass>
	  <WorkToMake>15000</WorkToMake>
    </statBases>
	<equippedAngleOffset>-45</equippedAngleOffset>
	<costList>
      <Steel>70</Steel>
	  <Chemfuel>40</Chemfuel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
	<equippedStatOffsets>
      <ConstructionSpeed>0.80</ConstructionSpeed>
	  <ButcheryMechanoidEfficiency>0.25</ButcheryMechanoidEfficiency>
	  <ButcheryMechanoidSpeed>0.75</ButcheryMechanoidSpeed>
	  <MoveSpeed>-0.25</MoveSpeed>
    </equippedStatOffsets>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>6</power>
        <cooldownTime>0.6</cooldownTime>
		<armorPenetration>0.8</armorPenetration>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.0</cooldownTime>
		<armorPenetration>0.8</armorPenetration>
      </li>
    </tools>
	<weaponTags>
      <li>PowerTool</li>
    </weaponTags>
  </ThingDef>
  
  <ThingDef ParentName="MeleeWeaponMotor">
    <defName>PowerTool_IndustrialJackHammer</defName>
    <label>jackhammer</label>
    <description>A powered bit rapidly impacts the target. This mechanical tool is used for breaking through hard rocks. The blunt force is also great at shattering bones and denting armor.</description>
    <graphicData>
      <texPath>WeaponMelee/IndustrialJackHammer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<statBases>
      <Mass>6.5</Mass>
	  <WorkToMake>15000</WorkToMake>
    </statBases>
	<equippedAngleOffset>-45</equippedAngleOffset>
	<costList>
      <Steel>80</Steel>
	  <Chemfuel>40</Chemfuel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
	<equippedStatOffsets>
      <MiningSpeed>0.80</MiningSpeed>
	  <MoveSpeed>-0.25</MoveSpeed>
    </equippedStatOffsets>
    <tools>
      <li>
        <label>bit</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>6</power>
        <cooldownTime>0.8</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
	<weaponTags>
      <li>PowerTool</li>
    </weaponTags>
  </ThingDef>
  
  <ThingDef ParentName="MeleeWeaponMotor">
    <defName>PowerTool_IndustrialDrill</defName>
    <label>drill</label>
    <description>A powered screwdriver for assembling devices. Improves work speed on industrial assembly lines.</description>
    <graphicData>
      <texPath>WeaponMelee/IndustrialDrill</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<statBases>
      <Mass>2.5</Mass>
	  <WorkToMake>15000</WorkToMake>
    </statBases>
	<equippedAngleOffset>-45</equippedAngleOffset>
	<costList>
      <Steel>50</Steel>
	  <Chemfuel>20</Chemfuel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
	<equippedStatOffsets>
      <GeneralLaborSpeed>0.80</GeneralLaborSpeed>
    </equippedStatOffsets>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>6</power>
        <cooldownTime>0.8</cooldownTime>
      </li>
      <li>
        <label>base</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
	<weaponTags>
      <li>PowerTool</li>
    </weaponTags>
  </ThingDef>
  
  
</Defs>