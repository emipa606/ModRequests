	<costStuffCount>320</costStuffCount>
	<stuffCategories>
		<li>Metallic</li>
	</stuffCategories>
	<costList>
      <ComponentSpacer>5</ComponentSpacer>
      <Plasteel>200</Plasteel>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>TailAttackToolBlunt</li>
        <li>TailAttackToolStab</li>
        <li>Neck</li>
        <li>FullHead</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/drakeplate</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>Drake</li>
		<li>DoomDrake</li>
      </tags>
    </apparel>
	<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

</Defs>
