<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_NiHalDrakeArmor</defName>
    <label>Drake armor</label>
    <description>Heavy armor plating designed to fit a Drake's strange physical structure and intimidate the heck out of enemies. Also helps with cold environments.</description>
    <techLevel>Medieval</techLevel>
	<recipeMaker>
		<researchPrerequisite>Smithing</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmithy</li>
			<li>FueledSmithy</li>
		</recipeUsers>
	</recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/drakearmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <MaxHitPoints>800</MaxHitPoints>
      <MarketValue>330</MarketValue>
      <Mass>6</Mass>
      <Flammability>0.1</Flammability>
      <StuffEffectMultiplierArmor>0.95</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.9</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
    </statBases>
	<costStuffCount>440</costStuffCount>
	<stuffCategories>
		<li>Metallic</li>
	</stuffCategories>
	<costList>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>TailAttackToolBlunt</li>
        <li>TailAttackToolStab</li>
        <li>Neck</li>
        <li>FullHead</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/drakearmor</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>Drake</li>
		<li>DoomDrake</li>
      </tags>
    </apparel>
	<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_NiHalDrakeCoat</defName>
    <label>Drake coat</label>
    <description>A heavy coat and harness made for a Drake. Insulates against the cold a little bit, and of course protects the Drake.</description>
    <techLevel>Medieval</techLevel>
	<recipeMaker>
		<researchPrerequisite>Smithing</researchPrerequisite>
		<recipeUsers>
       		 <li>ElectricTailoringBench</li>
       		 <li>HandTailoringBench</li>
		</recipeUsers>
	</recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/drakecoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <MaxHitPoints>400</MaxHitPoints>
      <MarketValue>100</MarketValue>
      <Mass>6</Mass>
      <Flammability>0.8</Flammability>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.3</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
    </statBases>
	<costStuffCount>90</costStuffCount>
	<stuffCategories>
     		 <li>Fabric</li>
      		<li>Leathery</li>
	</stuffCategories>
	<costList>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/drakecoat</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>Drake</li>
		<li>DoomDrake</li>
      </tags>
    </apparel>
	<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef> 

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_NiHalDrakePlate</defName>
    <label>Drake power armor</label>
    <description>Super-heavy drake armor with powered elements. Makes drakes faster and deadlier than ever. Extremely expensive.</description>
    <techLevel>Ultra</techLevel>
	<recipeMaker>
		<researchPrerequisite>PoweredArmor</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmithy</li>
			<li>FueledSmithy</li>
		</recipeUsers>
	</recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/drakearmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <MaxHitPoints>1000</MaxHitPoints>
      <MarketValue>1100</MarketValue>
      <Mass>6</Mass>
      <Flammability>0.1</Flammability>
      <StuffEffectMultiplierArmor>1.2</StuffEffectMultiplierArmor>
       <StuffEffectMultiplierInsulation_Cold>1.2</StuffEffectMultiplierInsulation_Cold>
