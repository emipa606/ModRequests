      <texPath>Turrets2/VictoryClassStarDestroyerTurret1</texPath>
    </graphicData>
    <verbs>
      <li>
        <defaultProjectile>CEC_Bullet_TurbolaserGreen</defaultProjectile>
        <spawnDef>CEC_Proj_TurbolaserGreen</spawnDef>
        <label>fire ionized bolt</label>
        <verbClass>Verb_LaunchProjectileShip</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>12.9</range>
