    <costList>
      <O21_OR_Durasteel>420</O21_OR_Durasteel>
      <O21_OR_ComponentHypertech>12</O21_OR_ComponentHypertech>
    </costList>
    <comps>
      <li Class="CompProperties_ShipPart"/>
    </comps>
    <placeWorkers>
