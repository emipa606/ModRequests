<Patch>
	
	<!-- Children and Pregnancy -->
	
	<Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
			<li Class="PatchOperationFindMod">
				<mods>
					<li>Children and Pregnancy</li>
				</mods>
				<match Class="PatchOperationSequence">
				    <success>Always</success>
					<operations>
						<li Class="PatchOperationReplace">
							<xpath>/Defs/HediffDef[
								defName = "AgeMatters_baby"
								]/stages</xpath>
							<value>
								<stages>
									<li>
										<becomeVisible>true</becomeVisible>
										<minSeverity>0</minSeverity>
										<statOffsets>
											<PainShockThreshold>-0.15</PainShockThreshold>
											<GlobalLearningFactor>0.35</GlobalLearningFactor>
											<PawnBeauty>1</PawnBeauty>
										</statOffsets>
										<restFallFactorOffset>2</restFallFactorOffset>
										<vomitMtbDays>2</vomitMtbDays>
									</li>
								</stages>
							</value>
						</li>
						<li Class="PatchOperationReplace">
							<xpath>/Defs/HediffDef[
								defName = "AgeMatters_toddler"
								]/stages</xpath>
							<value>
								<stages>
									<li>
										<becomeVisible>true</becomeVisible>
										<minSeverity>0</minSeverity>
										<restFallFactorOffset>1.5</restFallFactorOffset>
										<statOffsets>
											<PainShockThreshold>-0.15</PainShockThreshold>
											<GlobalLearningFactor>0.35</GlobalLearningFactor>
											<PawnBeauty>1</PawnBeauty>
										</statOffsets>
										<vomitMtbDays>5</vomitMtbDays>
									</li>
								</stages>
							</value>
						</li>
						<li Class="PatchOperationReplace">
							<xpath>/Defs/HediffDef[
								defName = "AgeMatters_child"
								]/stages</xpath>
							<value>
								<stages>
									<li>
										<becomeVisible>true</becomeVisible>
										<minSeverity>0</minSeverity>
										<restFallFactorOffset>0.4</restFallFactorOffset>
										<statOffsets>
											<PainShockThreshold>-0.15</PainShockThreshold>
											<GlobalLearningFactor>0.35</GlobalLearningFactor>
											<PawnBeauty>1</PawnBeauty>
										</statOffsets>
										<vomitMtbDays>40</vomitMtbDays>
									</li>
								</stages>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RimWorldChildren.RacialLifestageDef[
								defName = "Default_Lifestages"
								]/lifeStages</xpath>
							<value>
								<li>
									<lifeStageDef>HumanlikeOld</lifeStageDef>
									<lifestageType>Adult</lifestageType>
								</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RimWorldChildren.RacialLifestageDef[
								defName = "Human_Lifestages"
								]/lifeStages</xpath>
							<value>
								<li>
									<lifeStageDef>HumanlikeOld</lifeStageDef>
									<lifestageType>Adult</lifestageType>
								</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RimWorldChildren.RacialLifestageDef[
								defName = "Ratkin_Lifestages"
								]/lifeStages</xpath>
							<value>
								<li>
									<lifeStageDef>HumanlikeOld</lifeStageDef>
									<lifestageType>Adult</lifestageType>
								</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RimWorldChildren.RacialLifestageDef[
								defName = "Alien_Orassan_Lifestages"
								]/lifeStages</xpath>
							<value>
								<li>
									<lifeStageDef>HumanlikeOld</lifeStageDef>
									<lifestageType>Adult</lifestageType>
								</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RimWorldChildren.RacialLifestageDef[
								defName = "Default_Lifestages"
								]/lifeStages/li[6]</xpath>
							<value>
								<capMods>
									<li>
										<capacity>Manipulation</capacity>
										<offset>-0.15</offset>
									</li>
									<li>
										<capacity>Talking</capacity>
										<offset>-0.1</offset>
									</li>
								</capMods>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RimWorldChildren.RacialLifestageDef[
								defName = "Human_Lifestages"
								]/lifeStages/li[6]</xpath>
							<value>
								<capMods>
									<li>
										<capacity>Manipulation</capacity>
										<offset>-0.15</offset>
									</li>
									<li>
										<capacity>Talking</capacity>
										<offset>-0.1</offset>
									</li>
								</capMods>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RimWorldChildren.RacialLifestageDef[
								defName = "Ratkin_Lifestages"
								]/lifeStages/li[6]</xpath>
							<value>
								<capMods>
									<li>
										<capacity>Manipulation</capacity>
										<offset>-0.15</offset>
									</li>
									<li>
										<capacity>Talking</capacity>
										<offset>-0.1</offset>
									</li>
								</capMods>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RimWorldChildren.RacialLifestageDef[
								defName = "Alien_Orassan_Lifestages"
								]/lifeStages/li[6]</xpath>
							<value>
								<capMods>
									<li>
										<capacity>Manipulation</capacity>
										<offset>-0.15</offset>
									</li>
									<li>
										<capacity>Talking</capacity>
										<offset>-0.1</offset>
									</li>
								</capMods>
							</value>
						</li>
						<li Class="PatchOperationRemove">
							<xpath>/Defs/ThingDef[
								defName = "AMCrib"
								]</xpath>
						</li>
					</operations>
				</match>
			</li>
		</operations>
	</Operation>
				
</Patch>