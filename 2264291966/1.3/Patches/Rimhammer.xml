	<!-- Rimhammer - The End Times - Dwarfs -->
	
	<Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
			<li Class="PatchOperationFindMod">
				<mods>
					<li>Rimhammer - The End Times - Dwarfs</li>
				</mods>
				<match Class="PatchOperationSequence">
				    <success>Always</success>
					<operations>			
						<li Class="PatchOperationAdd">
							<xpath>/Defs/AlienRace.ThingDef_AlienRace[
								defName = "RH_TET_Dwarf_Race_Standard"
								]/race/hediffGiverSets</xpath>
							<value>
								<li>AgeMatters</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/AlienRace.ThingDef_AlienRace[
								defName = "RH_TET_Dwarf_Race_Standard"
								]/race/lifeStageAges</xpath>
							<value>
								<li>
									<def>HumanlikeOld</def>
									<minAge>340</minAge>
								</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/HediffGiverSetDef[defName = "AgeMatters"]/hediffGivers</xpath>
							<value>
								<li Class="OHPLS.CustomRace_HediffGiver_OHPLS">
									<hediff>AgeMatters_OneHediffPerLifeStageRH_TET_Dwarf_Race_Standard</hediff>
								</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>Defs</xpath>
							<value>
								<HediffDef ParentName="HiddenHediffBaseAM">
									<defName>AgeMatters_OneHediffPerLifeStageRH_TET_Dwarf_Race_Standard</defName>
									<hediffClass>HediffWithComps</hediffClass>

									<description>Simulates the effects of aging on a pawn over their lifespan from birth to death.</description>
