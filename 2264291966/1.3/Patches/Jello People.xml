<Patch>

	<!-- Jello People -->
	
	<Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
			<li Class="PatchOperationFindMod">
				<mods>
					<li>Jello People</li>
				</mods>
				<match Class="PatchOperationSequence">
				    <success>Always</success>
					<operations>			
						<li Class="PatchOperationAdd">
							<xpath>/Defs/AlienRace.ThingDef_AlienRace[
								defName = "Alien_SlimePersonRace"
								]/race/hediffGiverSets</xpath>
							<value>
								<li>AgeMatters</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/HediffGiverSetDef[defName = "AgeMatters"]/hediffGivers</xpath>
							<value>
								<li Class="OHPLS.CustomRace_HediffGiver_OHPLS">
									<hediff>AgeMatters_OneHediffPerLifeStageAlien_SlimePersonRace</hediff>
								</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>Defs</xpath>
							<value>
								<HediffDef ParentName="HiddenHediffBaseAM">
									<defName>AgeMatters_OneHediffPerLifeStageAlien_SlimePersonRace</defName>
									<hediffClass>HediffWithComps</hediffClass>

									<description>Simulates the effects of aging on a pawn over their lifespan from birth to death.</description>
									<label>Age Matters</label>
									<labelNoun>OneHediffPerLifeStage.labelNoun</labelNoun>
									
									<stages>
										<li>
											<minSeverity>0</minSeverity>
											<becomeVisible>false</becomeVisible>
										</li>
									</stages>

									<comps>
										<li Class="OHPLS.HediffCompProperties_LifeStageHediffAssociation">
											<race>Alien_SlimePersonRace</race>

											<bodyPartDef></bodyPartDef>

											<associations>
												<li>
													<lifeStageDef>BabySlime</lifeStageDef>
													<hediff>AgeMatters_toddler</hediff>
												</li>
												<li>
													<lifeStageDef>YoungSlime</lifeStageDef>
													<hediff>AgeMatters_teenager</hediff>
												</li>
												<li>
													<lifeStageDef>AdultSlime</lifeStageDef>
													<hediff>AgeMatters_adult</hediff>
												</li>
												<li>
													<lifeStageDef>ElderSlime</lifeStageDef>
													<hediff>AgeMatters_old</hediff>
												</li>
											</associations>
											
											<debug>false</debug>
										</li>
									</comps>
								</HediffDef>
							</value>
						</li>
					</operations>
				</match>
			</li>
		</operations>
	</Operation>
	
