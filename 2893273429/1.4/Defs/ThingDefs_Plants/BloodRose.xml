<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PlantBase">
    <defName>Plant_BloodRose</defName>
    <label>blood rose</label>
    <description>A plant engineered by ancient sanguophages, once grown can be harvested for hemogen packs.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <altitudeLayer>Building</altitudeLayer>
    <graphicData>
      <texPath>Things/Plant/BloodRose</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <growDays>10</growDays>
      <sowWork>400</sowWork>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>HemogenPack</harvestedThingDef>
      <harvestYield>5</harvestYield>
      <harvestWork>250</harvestWork>
      <neverBlightable>true</neverBlightable>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowMinSkill>8</sowMinSkill>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.0</visualSizeRange>
      <pollution>PollutedOnly</pollution>
      <fertilityMin>0.50</fertilityMin>
      <fertilitySensitivity>0.0</fertilitySensitivity>
      <harvestAfterGrowth>0.30</harvestAfterGrowth>
	  <blockAdjacentSow>true</blockAdjacentSow>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
  
</Defs>
