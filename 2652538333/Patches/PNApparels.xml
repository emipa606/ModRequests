<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Paniel the Automata</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/AlienRace.ThingDef_AlienRace[defName = "Paniel_Race"]/alienRace/raceRestriction/onlyUseRaceRestrictedApparel</xpath>
          <value>
            <onlyUseRaceRestrictedApparel>false</onlyUseRaceRestrictedApparel>
          </value>
        </li>
		<li Class="PatchOperationReplace">
          <xpath>Defs/AlienRace.ThingDef_AlienRace[defName = "Paniel_Race"]/alienRace/raceRestriction/weaponList</xpath>
          <value>
            <weaponList></weaponList>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>