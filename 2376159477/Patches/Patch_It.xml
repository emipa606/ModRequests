<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/HediffDef[defName = "PenoxycylineHigh"]/stages/li[1]/makeImmuneTo</xpath>
	<value>
          <makeImmuneTo>
            <li>Malaria</li>
            <li>SleepingSickness</li>
            <li>Plague</li>
            <li>GutWorms</li>
            <li>Flu</li>
            <li>MuscleParasites</li>
            <li>Animal_Flu</li>
            <li>Animal_Plague</li>
          </makeImmuneTo>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "Penoxycyline"]/graphicData</xpath>
	<value>
    <graphicData>
      <texPath>Things/Item/Drug/Penoxycyline</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "Penoxycyline"]/description</xpath>
	<value>
    <description>A drug for preventing infections before they take hold. Blocks malaria, sleeping sickness, plague, flu, muscle parasites, and gut worms, and can also be used for flu and plague on animals. Must be taken every five days to remain effective.\n\nThis drug only prevents new infections. It does not cure existing infections - even those that are not yet discovered.</description>
	</value>
  </Operation>
  
</Patch>