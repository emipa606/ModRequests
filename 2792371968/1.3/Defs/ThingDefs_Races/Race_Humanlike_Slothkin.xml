<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<AlienRace.ThingDef_AlienRace ParentName="BasePawn">
  <defName>VB_SlothkinRace</defName>
  <label>slothkin</label>
  <description>A humanoid version of the megatherium created in a lab. They are big, strong and slow, possessing the devastating claws of their animal counterparts but being quite gentle and mostly harmless.</description>
  <statBases>
      <MarketValue>1550</MarketValue>
      <MoveSpeed>4.0</MoveSpeed>
      <ComfyTemperatureMin>-55</ComfyTemperatureMin>
      <RoyalFavorValue>2</RoyalFavorValue>
  </statBases>
  <tools>
    <li>
      <label>left fist</label>
      <capacities>
        <li>Blunt</li>
      </capacities>
      <power>8.2</power>
      <cooldownTime>2</cooldownTime>
      <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      <surpriseAttack>
        <extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>14</amount>
          </li>
        </extraMeleeDamages>
      </surpriseAttack>
    </li>
    <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>16.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      </li>
    <li>
      <label>right fist</label>
      <capacities>
        <li>Blunt</li>
      </capacities>
      <power>8.2</power>
      <cooldownTime>2</cooldownTime>
      <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
      <surpriseAttack>
        <extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>14</amount>
          </li>
        </extraMeleeDamages>
      </surpriseAttack>
    </li>
    <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>16.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
      </li>
    <li>
      <label>teeth</label>
      <capacities>
        <li>Bite</li>
      </capacities>
      <power>15.8</power>
      <cooldownTime>2</cooldownTime>
      <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
      <chanceFactor>0.07</chanceFactor>
      <soundMeleeHit>Pawn_Melee_HumanBite_Hit</soundMeleeHit>
      <soundMeleeMiss>Pawn_Melee_HumanBite_Miss</soundMeleeMiss>
    </li>
    <li>
      <label>head</label>
      <capacities>
        <li>Blunt</li>
      </capacities>
      <power>5</power>
      <cooldownTime>2</cooldownTime>
      <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      <chanceFactor>0.2</chanceFactor>
    </li>
  </tools>


  <alienRace>
      <generalSettings>
          <maleGenderProbability>0.5</maleGenderProbability>
          <immuneToAge>false</immuneToAge>
          <canLayDown>true</canLayDown>
          <allowHumanBios>true</allowHumanBios>
          <humanRecipeImport>true</humanRecipeImport>
          <alienPartGenerator>
              <aliencrowntypes>
                <li>Average_Normal</li>
              </aliencrowntypes>
              <alienbodytypes>
                <li>Male</li>
                <li>Hulk</li>
                <li>Fat</li>
              </alienbodytypes>
              <useGenderedHeads>false</useGenderedHeads>
              <useGenderedBodies>false</useGenderedBodies>
              <colorChannels>
                  <li>
                      <name>skin</name>
                      <first Class="ColorGenerator_Options">
                          <options>
                              <li>
                                <weight>50</weight>
                                <only>RGBA(255,231,169,255)</only>
                              </li>
                              <li>
                                <weight>50</weight>
                                <only>RGBA(188,123,66,255)</only>
                              </li>
                              <li>
                                <weight>30</weight>
                                <only>RGBA(74,44,44,255)</only>
                              </li>
                              <li>
                                <weight>1</weight>
                                <only>RGBA(253,212,0,255)</only>
                              </li>
                          </options>
                      </first>
                  </li>
              </colorChannels>
          </alienPartGenerator>
      </generalSettings>
      <graphicPaths>
          <li>
              <body>VB/Things/Pawn/Slothkin/Bodies/</body>
              <head>VB/Things/Pawn/Slothkin/Heads/</head>
          </li>
      </graphicPaths>
      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <hasStyle>true</hasStyle>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
        <li>
          <key>TattooDef</key>
          <value>
            <hasStyle>true</hasStyle>
          </value>
        </li>
      </styleSettings>
      <thoughtSettings />
      <relationSettings />
      <raceRestriction />
      <compatibility>
          <isFlesh>true</isFlesh>
          <isSentient>true</isSentient>
          <hasBlood>true</hasBlood>
      </compatibility>
  </alienRace>

