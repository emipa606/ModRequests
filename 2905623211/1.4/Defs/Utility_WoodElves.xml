<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="DevDesigner_WoodElves_Utility" Abstract="True" ParentName="ApparelMakeableBase">
    <techLevel>Medieval</techLevel>
    <tradeability>Sellable</tradeability>
    <generateCommonality>0.001</generateCommonality>

    <recipeMaker>
      <researchPrerequisite>DevDesigner_ElvenEquipment_WoodElves</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>

    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  <!-- DevDesigner_WoodElves_Boots -->
  <ThingDef ParentName="DevDesigner_WoodElves_Utility">
    <defName>DevDesigner_WoodElves_Boots</defName>
    <label>elven boots</label>
    <description>Wearing leather boots will increase movement speed.</description>

    <graphicData>
      <texPath>Apparel/Boots/Boots</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.65</drawSize>
    </graphicData>

    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>

    <statBases>
      <MaxHitPoints>115</MaxHitPoints>
      <WorkToMake>1000</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.18</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.35</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.35</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>

    <equippedStatOffsets>
      <MoveSpeed>0.15</MoveSpeed>
    </equippedStatOffsets>

    <thingCategories Inherit="False">
      <li>DevDesigner_Footwear</li>
    </thingCategories>

    <apparel>
      <bodyPartGroups>
        <li>Feet</li>
      </bodyPartGroups>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>DevDesigner_WoodElves_Apparel</li>
        <li>DevDesigner_WoodElves_Light</li>
        <li>DevDesigner_WoodElves_Footware</li>
      </tags>
      <defaultOutfitTags></defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- DevDesigner_WoodElves_Gloves -->
  <ThingDef ParentName="DevDesigner_WoodElves_Utility">
    <defName>DevDesigner_WoodElves_Gloves</defName>
    <label>elven gloves</label>
    <description>Wearing leather gloves will increase workspeed and shooting accuracy.</description>

    <graphicData>
      <texPath>Apparel/Gloves/Gloves</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.8</drawSize>
    </graphicData>

    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>

    <statBases>
      <MaxHitPoints>115</MaxHitPoints>
      <WorkToMake>1000</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.18</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.35</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.35</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>

    <equippedStatOffsets>
      <WorkSpeedGlobal>0.05</WorkSpeedGlobal>
      <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
    </equippedStatOffsets>

    <thingCategories Inherit="False">
      <li>DevDesigner_Handwear</li>
    </thingCategories>

    <apparel>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>DevDesigner_WoodElves_Apparel</li>
        <li>DevDesigner_WoodElves_Light</li>
        <li>DevDesigner_WoodElves_Handware</li>
      </tags>
      <defaultOutfitTags></defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>
