<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- DevDesigner_DarkElves_Spear -->
  <ThingDef ParentName="DevDesigner_SpearBase">
    <defName>DevDesigner_DarkElves_Spear</defName>
    <label>elven spear</label>
    <description>This spear is wielded by the elite Dreadspear unit of the Dark Elves. It is crafted from the finest steel and imbued with powerful dark magic. The spear is adorned with jagged, intimidating spikes and etched with designs of twisted, thorny vines. It is not only a deadly weapon on the battlefield, but also a symbol of the Dreadspears' ferocity and determination. The mere sight of a Dreadspear being wielded is enough to strike fear into the hearts of the enemy.</description>
    <graphicData>
      <texPath>Weapons/Melee/DarkElves_Spear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.45,1.45)</drawSize>
    </graphicData>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.1</cooldownTime>
        <armorPenetration>0.55</armorPenetration>
      </li>
    </tools>
    <weaponTags>
      <li>DevDesigner_DarkElves_Spear</li>
    </weaponTags>
    <modExtensions>
      <li Class="VFECore.ThingDefExtension">
        <usableWithShields>true</usableWithShields>
        <weaponDraftedDrawOffsets>
          <north>
            <drawOffset>(0.35,-0.5,0.57)</drawOffset>
            <angleOffset>-143</angleOffset>
          </north>
          <east>
            <drawOffset>(0.1,0,0.57)</drawOffset>
            <angleOffset>-122</angleOffset>
          </east>
          <south>
            <drawOffset>(-0.35,0,0.57)</drawOffset>
            <angleOffset>-143</angleOffset>
          </south>
          <west>
            <drawOffset>(-0.1,-0.5,0.57)</drawOffset>
            <angleOffset>122</angleOffset>
          </west>
        </weaponDraftedDrawOffsets>
      </li>
    </modExtensions>

    <recipeMaker>
      <researchPrerequisite>DevDesigner_ElvenEquipment_DarkElves</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

