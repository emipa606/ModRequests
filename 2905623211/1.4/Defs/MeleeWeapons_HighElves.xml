<Defs>

  <!-- DevDesigner_HighElves_Spear -->
  <ThingDef ParentName="DevDesigner_SpearBase">
    <defName>DevDesigner_HighElves_Spear</defName>
    <label>elven spear</label>
    <description>This spear is wielded by the elite spearman unit of the High Elves. It is crafted from the finest steel and imbued with powerful magic imbued by the High Elves' mages. The spear is adorned with intricate designs and symbols of the High Elves, representing their grace and nobility. The spear is not only a formidable weapon on the battlefield, but also a symbol of honor for the warrior who wields it.</description>
    <graphicData>
      <texPath>Weapons/Melee/HighElves_Spear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.45,1.45)</drawSize>
    </graphicData>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.1</cooldownTime>
        <armorPenetration>0.55</armorPenetration>
      </li>
    </tools>
    <weaponTags>
      <li>DevDesigner_HighElves_Spear</li>
    </weaponTags>
    <modExtensions>
      <li Class="VFECore.ThingDefExtension">
        <usableWithShields>true</usableWithShields>
        <weaponDraftedDrawOffsets>
          <north>
            <drawOffset>(0.35,-0.5,0.57)</drawOffset>
            <angleOffset>-143</angleOffset>
          </north>
          <east>
            <drawOffset>(0.1,0,0.57)</drawOffset>
            <angleOffset>-122</angleOffset>
          </east>
          <south>
            <drawOffset>(-0.35,0,0.57)</drawOffset>
            <angleOffset>-143</angleOffset>
          </south>
          <west>
            <drawOffset>(-0.1,-0.5,0.57)</drawOffset>
            <angleOffset>122</angleOffset>
          </west>
        </weaponDraftedDrawOffsets>
      </li>
    </modExtensions>

    <recipeMaker>
      <researchPrerequisite>DevDesigner_ElvenEquipment_HighElves</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

