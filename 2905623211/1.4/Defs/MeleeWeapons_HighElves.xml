    </tools>
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
    <recipeMaker>
      <researchPrerequisite>DevDesigner_ElvenEquipment_HighElves</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <modExtensions>
      <li Class="VFECore.ThingDefExtension">
        <weaponDraftedDrawOffsets>
          <north>
            <drawOffset>(-0.20,0.0,0.10)</drawOffset> <!--0.30,0,0.40-->
            <angleOffset>115</angleOffset>
          </north>
          <east>
            <drawOffset>(0.20,0.0,0.20)</drawOffset> <!--0.30,0.2,0.40-->
            <angleOffset>-65</angleOffset>
          </east>
          <south>
