      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.2</drawSize>
    </graphicData>

    <statBases>
      <WorkToMake>24000</WorkToMake>
      <Mass>3</Mass>
    </statBases>

    <costStuffCount>150</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>

    <weaponTags>
      <li>DevDesigner_HighElves_Greatsword</li>
    </weaponTags>

    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>32</power>
        <cooldownTime>2.85</cooldownTime>
        <armorPenetration>0.25</armorPenetration>
      </li>
    </tools>

    <recipeMaker>
      <researchPrerequisite>DevDesigner_ElvenEquipment_HighElves</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

