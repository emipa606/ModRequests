            <angleOffset>-45</angleOffset>
          </south>
          <west>
            <drawOffset>(-0.20,0.0,0.20)</drawOffset>
            <angleOffset>65</angleOffset>
          </west>
        </weaponDraftedDrawOffsets>
      </li>
    </modExtensions>
  </ThingDef>

