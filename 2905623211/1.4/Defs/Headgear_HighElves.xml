<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- DevDesigner_HighElves_MetalHeadgear -->
  <ThingDef Name="DevDesigner_HighElves_MetalHeadgear" Abstract="True" ParentName="DevDesigner_Elves_MetalHeadgear">
    <recipeMaker>
      <researchPrerequisite>DevDesigner_ElvenEquipment_HighElves</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

  <!-- DevDesigner_HighElves_SpearmanHelmet -->
  <ThingDef ParentName="DevDesigner_HighElves_MetalHeadgear">
    <defName>DevDesigner_HighElves_SpearmanHelmet</defName>
    <label>Spearman Helmet</label>
    <description>This helmet is worn by the elite spearman unit of the High Elves. It is crafted from the finest steel and imbued with powerful magic imbued by the High Elves' mages. The helmet is adorned with elegant, sweeping lines and a crest in the shape of a white swan. The helmet is designed to protect its wearer from harm and symbolize the grace and nobility of the High Elves. It is a mark of honor for a warrior to don the helmet of a High Elves spearman.</description>

    <graphicData>
      <texPath>Apparel/Headgear/HighElves/Spearman/Helmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.2</drawSize>
    </graphicData>

    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>0.5</Mass>
      <EquipDelay>0.8</EquipDelay>
      <StuffEffectMultiplierArmor>0.55</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.30</StuffEffectMultiplierInsulation_Heat>
    </statBases>

    <equippedStatOffsets>
      <SocialImpact>0.2</SocialImpact>
    </equippedStatOffsets>

    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costList>
      <Gold>1</Gold>
    </costList>

    <apparel>
      <developmentalStageFilter>Adult</developmentalStageFilter>
      <wornGraphicPath>Apparel/Headgear/HighElves/Spearman/Helmet</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>DevDesigner_HighElves_Apparel</li>
        <li>DevDesigner_HighElves_Heavy</li>
        <li>DevDesigner_HighElves_SpearmanHelmet</li>
      </tags>
    </apparel>

    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

