<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Santa Hat -->
    <ThingDef ParentName="HatMakeableBase">
		<defName>AX_SantaHat</defName>
		<label>santa hat</label>
		<description>A warm and funny shiny red santa hat. Colonists wearing this will feel warm christmas vibes and be less likely to have a mental breakdown.</description>
		<graphicData>
			<texPath>Things/Headgear/SantaHat/SantaHat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>1</generateCommonality>
		<costList>
			<Cloth>30</Cloth>
		</costList>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.08</MentalBreakThreshold>
		</equippedStatOffsets>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1500</WorkToMake>
			<Mass>0.1</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.2</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>0.8</EquipDelay>
		</statBases>
		<thingCategories Inherit='False'>
			<li>Headgear</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
                <li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Headgear/SantaHat/SantaHat</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Industrial</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<researchPrerequisites>
			<li>ComplexClothing</li>
		</researchPrerequisites>
    </ThingDef>
</Defs>