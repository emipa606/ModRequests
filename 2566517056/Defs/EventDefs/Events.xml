		<duration>30000~45000</duration>
		<categories>
			<li>Cosmos.Category.Drugs</li>
			<li>Cosmos.Category.Weapons</li>
			<li>Cosmos.Category.Shells</li>
			<li>Cosmos.Category.Artifacts</li>
		</categories>
		<chanceNullFaction>0.0</chanceNullFaction>
		<marketPercent>1.1~1.45</marketPercent>
		<chanceMilitaryHelp>1.0</chanceMilitaryHelp>
