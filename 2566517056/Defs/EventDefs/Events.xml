	<Cosmos.Defs.EventDef ParentName="Cosmos_EventBase">
		<defName>Cosmos_MerchantSpaceship</defName>
		<label>Spaceship</label>
		<description>A relatively small merchant ship plying nearby space for bargaining power at bargain prices.</description>
		<startDescription>The spaceship enters your orbit</startDescription>
		<endDescription>The spaceship leaves your orbit.</endDescription>
		<eventClass>Cosmos.Defs.Event_Spaceship</eventClass>
		<type>MerchantShip</type>
		<duration>30000~45000</duration>
		<categories>
			<li>Cosmos.Category.ResourceSimple</li>
			<li>Cosmos.Category.ResourceAdvanced</li>
			<li>Cosmos.Category.Textile</li>
			<li>Cosmos.Category.Drugs</li>
			<li>Cosmos.Category.FoodRaw</li>
			<li>Cosmos.Category.Food</li>
			<li>Cosmos.Category.Artifacts</li>
		</categories>
		<chanceNullFaction>0.25</chanceNullFaction>
		<marketPercent>1.0~1.35</marketPercent>
		<chanceMilitaryHelp>0.5</chanceMilitaryHelp>
		<entityDef>Cosmos_Spaceship</entityDef>
	</Cosmos.Defs.EventDef>
	
	<Cosmos.Defs.EventDef ParentName="Cosmos_EventBase">
		<defName>Cosmos_WarSpaceship</defName>
		<label>Warship</label>
		<description>A military spaceship capable of carrying heavy weapons.</description>
		<startDescription>The warship enters your orbit</startDescription>
		<endDescription>The warship leaves your orbit.</endDescription>
		<eventClass>Cosmos.Defs.Event_WarShip</eventClass>
