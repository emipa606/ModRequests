<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- Arid shrubland -->
			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationReplace">
						<xpath>Defs[ThingDef[defName="AEXP_Leather_Wildebeest"]]/ThingDef/race/leatherDef[text()="AEXP_Leather_Wildebeest" or text()="AEXP_Leather_Hippopotamus"]</xpath>
						<value>
							<leatherDef>Hide_Thick</leatherDef>
						</value>
					</li>
					
					<li Class="PatchOperationRemove">
						<xpath>Defs/ThingDef[defName="AEXP_Leather_Wildebeest" or defName="AEXP_Leather_Hippopotamus"]</xpath>
					</li>
					
					<li Class="PatchOperationAdd">
						<success>Always</success> 
						<xpath>/Defs</xpath>
						<value>
							<ThingDef ParentName="DummyLeatherBase">
								<defName>AEXP_Leather_Wildebeest</defName>
							</ThingDef>
							<ThingDef ParentName="DummyLeatherBase">
								<defName>AEXP_Leather_Hippopotamus</defName>
							</ThingDef>
						</value>
					</li>
				</operations>
			</li>
			<!-- Ice sheet -->
			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationReplace">
						<xpath>Defs[ThingDef[defName="AEXP_Leather_Pinniped"]]/ThingDef/race/leatherDef[text()="AEXP_Leather_Pinniped"]</xpath>
						<value>
							<leatherDef>Hide_Plain</leatherDef>
						</value>
					</li>
					
					<li Class="PatchOperationRemove">
						<xpath>Defs/ThingDef[defName="AEXP_Leather_Pinniped"]</xpath>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>/Defs</xpath>
						<value>
							<ThingDef ParentName="DummyLeatherBase">
								<defName>AEXP_Leather_Pinniped</defName>
							</ThingDef>
						</value>
					</li>
				</operations>
			</li>
			<!-- Rainforest -->
			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationReplace">
						<xpath>Defs[ThingDef[defName="AEXP_Leather_Tiger"]]/ThingDef/race/leatherDef[text()="AEXP_Leather_Tiger"]</xpath>
						<value>
							<leatherDef>Hide_Plain</leatherDef>
						</value>
					</li>
					
					<li Class="PatchOperationRemove">
						<xpath>Defs/ThingDef[defName="AEXP_Leather_Tiger"]</xpath>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>/Defs</xpath>
						<value>
							<ThingDef ParentName="DummyLeatherBase">
								<defName>AEXP_Leather_Tiger</defName>
							</ThingDef>
						</value>
					</li>
				</operations>
			</li>
			<!-- Australia -->
			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationReplace">
						<xpath>Defs[ThingDef[defName="AEXP_Leather_Platypus"]]/ThingDef/race/leatherDef[text()="AEXP_Leather_Platypus"]</xpath>
						<value>
							<leatherDef>Hide_Plain</leatherDef>
						</value>
					</li>
					
					<li Class="PatchOperationRemove">
						<xpath>Defs/ThingDef[defName="AEXP_Leather_Platypus"]</xpath>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>/Defs</xpath>
						<value>
							<ThingDef ParentName="DummyLeatherBase">
								<defName>AEXP_Leather_Platypus</defName>
							</ThingDef>
						</value>
					</li>
				</operations>
			</li>
			<!-- Desert -->
			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationReplace">
						<xpath>Defs[ThingDef[defName="AEXP_Leather_Lion"]]/ThingDef/race/leatherDef[text()="AEXP_Leather_Lion"]</xpath>
						<value>
							<leatherDef>Hide_Plain</leatherDef>
						</value>
					</li>
					
					<li Class="PatchOperationRemove">
						<xpath>Defs/ThingDef[defName="AEXP_Leather_Lion"]</xpath>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>/Defs</xpath>
						<value>
							<ThingDef ParentName="DummyLeatherBase">
								<defName>AEXP_Leather_Lion</defName>
							</ThingDef>
						</value>
					</li>
				</operations>
			</li>
		</operations>
	</Operation>
</Patch>					