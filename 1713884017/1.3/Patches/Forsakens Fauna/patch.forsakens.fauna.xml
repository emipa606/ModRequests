<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation MayRequire="forsakens.fauna" Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef/race/leatherDef[text()="Leather_Behemoth"]</xpath>
				<value>
					<leatherDef>Hide_Thick</leatherDef>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef/race/leatherDef[text()="Leather_Night"]</xpath>
				<value>
					<leatherDef>Hide_Plain</leatherDef>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>