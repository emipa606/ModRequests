<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Replicate Slag -->
	<RecipeDef>
		<defName>Replicate_MK1_SlagFromOmniGel</defName>
		<label>Replicate Slag from Omni-Gel</label>
		<description>Replicates slag debris from Omni-Gel.</description>
		<jobString>Creating slag from Omni-Gel.</jobString>
		<workAmount>200</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>OmniGel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<ChunkSlagSteel>1</ChunkSlagSteel>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>OmniGel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
	</RecipeDef>

