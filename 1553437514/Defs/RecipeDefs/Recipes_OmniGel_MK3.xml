<Defs>

	<!-- Replicate Plasteel -->
	<RecipeDef>
		<defName>Replicate_MK3_PlasteelFromOmniGel</defName>
		<label>Replicate Plasteel from Omni-Gel</label>
		<description>Replicates Plasteel from Omni-Gel.</description>
		<jobString>Creating Plasteel from Omni-Gel.</jobString>
		<workAmount>500</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>OmniGel</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
		</ingredients>
		<products>
			<Plasteel>3</Plasteel>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>OmniGel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
	</RecipeDef>

