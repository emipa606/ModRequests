<Defs>
  <!-- MakeAvaliGraphene -->
  <RecipeDef>
		<defName>MakeAvaliGraphene</defName>
		<label>Weave graphene</label>
		<description>Weave a graphene.</description>
		<jobString>Weaving graphene.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workAmount>1000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AvaliGraphene>10</AvaliGraphene>
		</products>
		<workSkill>Crafting</workSkill>
		<!-- <researchPrerequisite>AvaliWeaving</researchPrerequisite> -->
	</RecipeDef>
  
