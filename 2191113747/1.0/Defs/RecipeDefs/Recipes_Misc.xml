<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="MakeLootBoxBase" Abstract="True">
		<jobString>Getting loot box.</jobString>
		<workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
		<!--<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>-->
		<recipeUsers>
			<li>LootBoxBench</li>
		</recipeUsers>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
	
	<RecipeDef ParentName="MakeLootBoxBase">
		<defName>Make_LootBox_Treasure</defName>
		<label>get treasure chest</label>
		<description>Exchange silver to get a golden treasure chest.</description>
		<workAmount>150</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Silver</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Silver</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<LootBoxTreasure>1</LootBoxTreasure>
		</products>
	</RecipeDef>
	
