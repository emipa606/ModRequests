<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <!-- +++++ Winter Coat +++++ -->
 <ThingDef ParentName="ApparelMakeableBase">
    <defName>AMT_Apparel_Wintercoat</defName>
    <label>winter coat</label>
    <description>A well made coat ment to protect the user from some of the coldest nights.</description>
    <graphicData>
      <texPath>Things/Apparel/WinterCoat/FurCoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.35</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.00</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
		<thingCategories Inherit='False'>
		<li>Apparel</li>
		</thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/WinterCoat/FurCoat</wornGraphicPath>
	  <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
				<li>DankPyon_Bandit</li>
                <li>DankPyon_Mercenary</li>
				<li>DankPyon_Archer</li>
                <li>DankPyon_Footman</li>
				<li>DankPyon_Peasant</li>
				<li>Worker</li>
				<li>Soldier</li>
				<li>Royal</li>
				
				<li>MedievalBasic</li>
				<li>MedievalAdvanced</li>
                <li>MedievalMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
    </apparel>
			<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" /> <!-- Standard -->
  </ThingDef>
  
  <!-- +++++ Cowl +++++ -->
    <ThingDef ParentName="HatMakeableBase">
		<defName>AMT_Headgear_Cowl</defName>
		<label>cowl</label>
