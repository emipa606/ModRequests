<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- +++++ Light Armor +++++ -->
	
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>AMT_Apparel_Gambeson</defName>
		<label>gambeson</label>
		<description>A quilted and padded or stuffed cloth garment worn under chain mail that offers some protection.</description>
		<graphicData>
			<texPath>Things/Apparel/Gambeson/Gambeson</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<recipeMaker>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
			<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
		</recipeMaker>
		<costStuffCount>65</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
			<Mass>1</Mass>
			<StuffEffectMultiplierArmor>0.40</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.11</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Gambeson/Gambeson</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<tags>
				<li>MedievalBasic</li>
            </tags>
			<layers>
				<li>Middle</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>15</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.5,0.5,0.5)</min>
          <max>(1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
	</ThingDef>
	
</Defs>