<Defs>

	<!-- ===== Town Gloves ===== -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>AMT_Handwear_TownGloves</defName>
		<label>town gloves</label>
		<description>Tanned leathers sewn to fit the hand. Provides minimal protection. Wearing town gloves will increase workspeed.</description>
		<graphicData>
			<texPath>Things/Handwear/TownGloves</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.1</generateCommonality>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>

		<statBases>
			<MaxHitPoints>115</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.18</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1</EquipDelay>
		</statBases>

		<equippedStatOffsets>
			<WorkSpeedGlobal>0.05</WorkSpeedGlobal> 
		</equippedStatOffsets>

		<thingCategories Inherit="False">
			<li>DankPyon_Handwear</li>
		</thingCategories>

		<apparel>
			<bodyPartGroups>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>DankPyon_BrigandtThug</li>
				<li>DankPyon_BrigandRaider</li>
                <li>DankPyon_Mercenary</li>
				<li>DankPyon_MercenaryHeavy</li>
				<li>DankPyon_Archer</li>
                <li>DankPyon_Footman</li>
                <li>DankPyon_Billman</li>
				
				<li>MedievalBasic</li>
				<li>MedievalAdvanced</li>
                <li>MedievalMilitaryBasic</li>
                <li>MedievalMilitaryDecent</li>
            </tags>
			<defaultOutfitTags>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>

		<recipeMaker>
			<researchPrerequisite>DankPyon_ProtectiveClothing</researchPrerequisite>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>DankPyon_TailorsBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>
	
