<?xml version="1.0" encoding="utf-8" ?>

 
<Defs>

	<!-- A trait and at least one book must be defined for each custom class.
	Mage types should use the Arcane Tome example, and can define a torn script as a cheaper version that randomly assigns abilities
	Fighter types should use Martial Tome example
	Classes that support both types can use either Tome type. -->
	
	<!-- Custom Class Trait Example -->
	
	<TraitDef>  
		<defName>TM_TheAvatar</defName>
		<ignoreConfigErrors>true</ignoreConfigErrors>
		<commonality>0</commonality>
		<degreeDatas>	
		  <li>
			<label>Avatar</label>
			<description>[PAWN_nameDef] has been gifted with the powers of the Avatar. [PAWN_pronoun] has complete control over the elements. [PAWN_possessive] powers can be very fiece and terrifying when wielded correctly.</description>
			<degree>4</degree>
			<statOffsets>
				<PsychicSensitivity>0.5</PsychicSensitivity>
				<GlobalLearningFactor>0.5</GlobalLearningFactor>
				<PainShockThreshold>1</PainShockThreshold>
				<MoveSpeed>.5</MoveSpeed>
				<MeleeHitChance>1</MeleeHitChance>
				<MeleeDodgeChance>1</MeleeDodgeChance>
				<WorkSpeedGlobal>0.75</WorkSpeedGlobal>
				<ToxicSensitivity>-1</ToxicSensitivity>
				<MentalBreakThreshold>-1</MentalBreakThreshold>
				<ImmunityGainSpeed>1</ImmunityGainSpeed>
				<NegotiationAbility>1</NegotiationAbility>
				<SocialImpact>1</SocialImpact>
				<TradePriceImprovement>.25</TradePriceImprovement>
			</statOffsets>
		  </li>
		</degreeDatas>
		<conflictingTraits>
		</conflictingTraits>
		<modExtensions>
			<li Class="TorannMagic.TMDefs.DefModExtension_TraitEnchantments">
				<maxMP>-.5</maxMP>
				<mpRegenRate>+50.0</mpRegenRate>
				<spRegenRate>+10.0</spRegenRate>
				<magicCooldown>-0.95</magicCooldown>
				<mightCooldown>-0.95</mightCooldown>
			</li>
		</modExtensions>
		
	</TraitDef>
	
  
</Defs>