<?xml version="1.0" encoding="utf-8" ?>

<!-- 
A simple patching operation for Vanilla Achievements Expanded.
Uses no custom trackers, because I'm lazy.
This is for the Weapons Module.
-->

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Achievements Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs</xpath>
					<value>
						<!-- Collection Achievements: obtain the following weapons to get. -->
						<AchievementsExpanded.AchievementDef ParentName="OC_AchievementParent">
							<defName>OW_ObtainDevilsBargain</defName>
							<label>A Bargaining Chip</label>
							<description>Obtain the Devil's Bargain.</description>
		
							<tracker Class="AchievementsExpanded.ItemTracker">
								<def>OW_MeleeWeapon_DevilsBargain</def>
								<count>1</count>
							</tracker>
		
							<texPath>Achievements/Oddity_Devil_Achievement</texPath>
							<points>25</points>
						</AchievementsExpanded.AchievementDef>
						
						<AchievementsExpanded.AchievementDef ParentName="OC_AchievementParent">
							<defName>OW_ObtainSkyslasher</defName>
