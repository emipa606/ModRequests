<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Outdated status effects that are still here just in case. -->

	<!-- Sunder: Reduces target armor. -->
	<HediffDef>
		<defName>OW_MiscSunder</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>sunder</label>
		<labelNoun>sunder</labelNoun>
		<description>An outdated hediff. It'll be gone shortly.</description>
		<defaultLabelColor>(1.0,1.0,1.0)</defaultLabelColor>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>true</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-24</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
	</HediffDef>
	
	<!-- Cripple: Slows down target. -->
	<HediffDef>
