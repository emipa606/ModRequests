<?xml version="1.0" encoding="utf-8" ?>
<Defs>




  <ThingDef ParentName="FurnitureBase">
    <defName>DBZMeditationSpot</defName>
    <label>ki meditation spot</label>
    <description>A place for Meditating to generate Ki.</description>
    <thingClass>Building_WorkTable</thingClass>
    <researchPrerequisites><li>KiControl</li></researchPrerequisites>
    <graphicData>
      <texPath>Buildings/DBZMeditationSpotNew</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
     <!--<drawOffset>(0,1,0.5)</drawOffset>-->
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <WorkToBuild>50</WorkToBuild>
      <Mass>0.5</Mass>
    </statBases>
    <rotatable>false</rotatable>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>False</useHitPoints>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <drawGUIOverlay>true</drawGUIOverlay>

<minifiedDef>MinifiedThing</minifiedDef>
  <!--  <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>-->

    <building>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    <!--  <isSittable>true</isSittable>-->
      <destroySound>BuildingDestroyed_Soft_Small</destroySound>
    </building>

    <costList>
      <Cloth>50</Cloth>
    </costList>
    <recipes>
     <li>GatherKi</li> 
   </recipes>

   <hasInteractionCell>true</hasInteractionCell>
   <!-- LR, ?, Up Down-->
   <interactionCellOffset>(0,0,0)</interactionCellOffset>
   <surfaceType>Item</surfaceType>
   <inspectorTabs>
    <li>ITab_Bills</li>
  </inspectorTabs>
</ThingDef>


</Defs>