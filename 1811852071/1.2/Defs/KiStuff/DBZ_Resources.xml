<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>Paint</defName>
    <label>paint</label>
    <description>Liquid used to mark, decorate or designate a specific wall, area or even plants into a certain colour</description>
    <graphicData>
      <texPath>Resources/Paint</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
          <smeltable>false</smeltable>
    <statBases>
      <MarketValue>20</MarketValue>
      <Mass>1</Mass>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
      <stackLimit>50</stackLimit>
    <stuffProps>
      <commonality>0.30</commonality>
      <color>(102,102,105)</color>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>1</MaxHitPoints>
        <Beauty>-1</Beauty>
        <Flammability>0.7</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>

  

  <ThingDef ParentName="ResourceBase">
    <defName>Ki</defName>
    <label>ki</label>
    <description>Ki is the life energy of everything around you, and if a skilled enough individual uses it, it can become a weapon</description>
    <graphicData>
      <texPath>Resources/Ki</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.4</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>40</DeteriorationRate>
    </statBases>
    <stuffProps>
      <stuffAdjective>Ki</stuffAdjective>
      <constructEffect>ConstructWood</constructEffect>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <statFactors>
        <MaxHitPoints>0.4</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>1</Flammability>
        <WorkToMake>0.7</WorkToMake>
				<WorkToBuild>0.7</WorkToBuild>
      </statFactors>
    </stuffProps>
    <comps>
      <li Class="CompProperties_Lifespan">
        <lifespanTicks>360000</lifespanTicks>
      </li>
    </comps>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
  </ThingDef>
</Defs>