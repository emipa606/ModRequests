<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_StunRifle</defName>
    <label>automatic stun rifle</label>
    <description>An advanced gun that bears some semblance to an assault rifle. Used by police forces in developed societies to take care of threats with ideally no death involved. High firerate and good accuracy.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/StunRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>Fabrication</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <MarketValue>2500</MarketValue>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.88</AccuracyTouch>
      <AccuracyShort>0.73</AccuracyShort>
      <AccuracyMedium>0.6</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <StunComponent>2</StunComponent>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_StunRifle</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>27.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef Class="StunWeapons.ThingDef_StunBullet" ParentName="BaseBullet">
    <defName>Bullet_StunRifle</defName>
    <label>stun rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/StunMunition</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <addHediffChance>0.55</addHediffChance>
    <hediffToAdd>StunWeaponHediff</hediffToAdd>
    <thingClass>StunWeapons.Projectile_StunBullet</thingClass>
    <projectile>
