<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 <!-- PLEASE LET ME UPLOAD THIS THIS IS A CHANGE -->
  <HediffDef ParentName="InfectionBase">
    <defName>StunWeaponHediff</defName>
    <label>stunned by stun weapon</label>
    <description>This pawn has been stunned by a specially designed weapon.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2</severityPerDay>
      </li>
    </comps>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
    <stages>
      <li>
        <minSeverity>0.1</minSeverity>
        <label>minor</label>
        <painOffset>0.05</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.8</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <label>moderate</label>
        <vomitMtbDays>0.01</vomitMtbDays>
        <painOffset>0.25</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>severe</label>
        <painOffset>0.50</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.2</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.9</minSeverity>
        <label>lethal</label>
        <lifeThreatening>true</lifeThreatening>
        <deathMtbDays>0.2</deathMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>