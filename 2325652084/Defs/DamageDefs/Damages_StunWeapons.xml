<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <DamageDef>
    <defName>LightBullet</defName>
    <label>bullet</label>
    <workerClass>DamageWorker_Blunt</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been shot to death.</deathMessage>
    <hediff>Bruise</hediff>
    <hediffSkin>Bruise</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Bullet</impactSoundType>
    <armorCategory>Blunt</armorCategory>
    <overkillPctToDestroyPart>0.4~1.0</overkillPctToDestroyPart>
    <isRanged>true</isRanged>
    <makesAnimalsFlee>false</makesAnimalsFlee>
  </DamageDef>

  <DamageDef ParentName="BluntBase">
    <defName>BluntStun</defName>
    <label>stunning blunt</label>
    <additionalHediffs>
      <li>
        <hediff>StunWeaponHediff</hediff>
        <severityPerDamageDealt>0.03</severityPerDamageDealt>
      </li>
    </additionalHediffs>
    <impactSoundType>Blunt</impactSoundType>
  </DamageDef>

</Defs>
