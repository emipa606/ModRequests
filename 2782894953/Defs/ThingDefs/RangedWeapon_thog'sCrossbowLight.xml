<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>ThogsBow_CrossbowLight</defName>
    <label>light crossbow</label>
    <description>A small treated wood bow drawn across a simple carved stock, which is shouldered and fired in a manner similar to a rifle. An incredibly simple and relatively low-powered crossbow best used for hunting light game or for target practice, as it is very easy to draw, aim and fire, but it's very weak compared to more proper iterations.</description>
    <graphicData>
      <texPath>Weapon/CrossbowLight</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Small</soundInteract>
    <costList>
	  <Steel>5</Steel>
      <WoodLog>40</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>3500</WorkToMake>
      <Mass>1.8</Mass>
      <AccuracyTouch>0.58</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.58</AccuracyMedium>
      <AccuracyLong>0.4</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRangedDecent</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedLight</li>
    </weaponClasses>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>      
	  <researchPrerequisites>
		<li>RecurveBow</li>
	  </researchPrerequisites>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrow_LightBolt</defaultProjectile>
        <warmupTime>.85</warmupTime>
        <range>25.9</range>
        <soundCast>Bow_Small</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Arrow_LightBolt</defName>
    <label>light crossbow bolt</label>
    <graphicData>
      <texPath>Weapon/BoltLight</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>13</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <armorPenetrationBase>0.2</armorPenetrationBase>
      <speed>50</speed>
    </projectile>
  </ThingDef>
 </Defs>