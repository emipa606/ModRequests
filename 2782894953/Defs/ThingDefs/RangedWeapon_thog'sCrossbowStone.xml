<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>ThogsBow_CrossbowStone</defName>
    <label>stone bullet crossbow</label>
    <description>A rather oddly formed crossbow meant to fire small stones rather than bolts, in order to better hunt small game without damaging the carcasses. It is highly accurate and suprisingly powerful, but it isn't necessarily meant to be a weapon of warfare.</description>
    <graphicData>
      <texPath>Weapon/CrossbowStone</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Recurve</soundInteract>
    <costList>
	  <Steel>20</Steel>
      <WoodLog>30</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>7800</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.45</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.52</AccuracyLong>
      <RangedWeapon_Cooldown>2.7</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRangedDecent</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisites>
		<li>Smithing</li>
	</researchPrerequisites>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrow_CrossbowRock</defaultProjectile>
        <warmupTime>.8</warmupTime>
        <range>23.9</range>
        <soundCast>Bow_Large</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Arrow_CrossbowRock</defName>
    <label>rock bullet</label>
    <graphicData>
      <texPath>Weapon/Rock</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Blunt</damageDef>
      <damageAmountBase>9</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>38</speed>
    </projectile>
  </ThingDef>
 </Defs>