<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>ThogsBow_CrossbowCompound</defName>
    <label>compound crossbow</label>
    <description>An advanced iteration of the classic crossbow, replacing archaic wood and steel components with lightweight composite chemfuel plastics with ultra-strong iodized plasteel parts to maximize draw power and range. It is light, accurate, and deadly.</description>
    <graphicData>
      <texPath>Weapon/CrossbowCompound</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Recurve</soundInteract>
    <costList>
	  <ComponentIndustrial>2</ComponentIndustrial>
	  <Steel>35</Steel>
      <Plasteel>25</Plasteel>
    </costList>
    <statBases>
      <WorkToMake>12500</WorkToMake>
      <Mass>2.8</Mass>
      <AccuracyTouch>0.72</AccuracyTouch>
      <AccuracyShort>0.9</AccuracyShort>
      <AccuracyMedium>0.82</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisites>
		<li>Greatbow</li>
		<li>Machining</li>
	</researchPrerequisites>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrow_CompoundBolt</defaultProjectile>
        <warmupTime>.8</warmupTime>
        <range>26.9</range>
        <soundCast>Bow_Large</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Arrow_CompoundBolt</defName>
    <label>compound crossbow bolt</label>
    <graphicData>
      <texPath>Weapon/BoltCompound</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>22</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <armorPenetrationBase>0.45</armorPenetrationBase>
      <speed>64</speed>
    </projectile>
  </ThingDef>
 </Defs>