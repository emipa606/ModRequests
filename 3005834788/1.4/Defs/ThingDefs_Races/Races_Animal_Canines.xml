<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ThingBaseWolf">
    <defName>KenshiFauna_Bonedog</defName>
    <label>bonedog</label>
    <description>A fearsome canine covered in thick bone plating. The bonedog roams the desert in large packs in search of carrion and easy prey, ready to defend its hunting grounds from anything that dares trespass upon it. Despite their wild nature, bonedogs have been domesticated by people as trusty companions and loyal guardians.</description>
	<statBases>
    <MarketValue>400</MarketValue>
		<ComfyTemperatureMin>-18</ComfyTemperatureMin>
		<ComfyTemperatureMax>50</ComfyTemperatureMax>
    <ArmorRating_Blunt>0.12</ArmorRating_Blunt>
    <ArmorRating_Sharp>0.12</ArmorRating_Sharp>
	</statBases>
    <race>
      <meatLabel>dog meat</meatLabel>
	  <wildBiomes>
		<AridShrubland>0.8</AridShrubland>
		<Desert>0.3</Desert>
	  </wildBiomes>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBaseWolf">
    <defName>KenshiFauna_Bonedog</defName>
    <label>bonedog</label>
    <labelPlural>bonedogs</labelPlural>
    <combatPower>90</combatPower>
    <race>KenshiFauna_Bonedog</race>
	<wildGroupSize>
		<min>2</min>
		<max>6</max>
	</wildGroupSize>
    <lifeStages>
      <li>
        <label>bonedog pup</label>
        <labelPlural>bonedog puppies</labelPlural>
        <bodyGraphicData>
          <texPath>Animals/Bonedog/Bonedog</texPath>
          <drawSize>1.05</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Animals/Bonedog/Dessicated_Bonedog</texPath>
          <drawSize>1.05</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
		  <texPath>Animals/Bonedog/Bonedog</texPath>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
		  <texPath>Animals/Bonedog/Dessicated_Bonedog</texPath>
          <drawSize>1.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
		  <texPath>Animals/Bonedog/Bonedog</texPath>
          <drawSize>1.75</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
		  <texPath>Animals/Bonedog/Dessicated_Bonedog</texPath>
          <drawSize>1.75</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

</Defs>
