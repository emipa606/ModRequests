<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<!-- Swamp biomes. -->
	<Operation Class="PatchOperationAdd">
	  <xpath>/Defs/BiomeDef[defName = "TemperateSwamp"]/pollutionWildAnimals</xpath>
	  <value>
		<KenshiFauna_Bloodspider>0.7</KenshiFauna_Bloodspider>
		<KenshiFauna_WaterRaptor>0.28</KenshiFauna_WaterRaptor>
	  </value>
	</Operation>	
	<Operation Class="PatchOperationAdd">
	  <xpath>/Defs/BiomeDef[defName = "TropicalSwamp"]/pollutionWildAnimals</xpath>
	  <value>
	    <KenshiFauna_Bloodspider>0.65</KenshiFauna_Bloodspider>
		<KenshiFauna_WaterRaptor>0.4</KenshiFauna_WaterRaptor>
	  </value>
	</Operation> 
	
	<!-- Desert biomes. -->
	<Operation Class="PatchOperationAdd">
	  <xpath>/Defs/BiomeDef[defName = "AridShrubland"]/pollutionWildAnimals</xpath>
	  <value>
		<KenshiFauna_Gutter>0.7</KenshiFauna_Gutter>
		<KenshiFauna_Skinspider>0.15</KenshiFauna_Skinspider>
	  </value>
	</Operation> 
	<Operation Class="PatchOperationAdd">
	  <xpath>/Defs/BiomeDef[defName = "Desert"]/pollutionWildAnimals</xpath>
	  <value>
		<KenshiFauna_Gutter>0.65</KenshiFauna_Gutter>
		<KenshiFauna_Skinspider>0.15</KenshiFauna_Skinspider>
	  </value>
	</Operation>  	

</Patch>