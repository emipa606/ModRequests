<?xml version="1.0" encoding="utf-8"?>

<Defs>
		<Vehicles.VehicleTurretDef ParentName="TC_BaseTurret">
		<defName>TC_Fellowtown_Turret</defName>
		<label>main turret</label>
		<!-- 砲塔的渲染顯示 -->
		<graphicData>
			<texPath>Vehicles/Fellowtown/Fellowtown_Turret</texPath>
			<drawSize>6</drawSize>
		</graphicData>
		<!-- <uiIconPath>Soviet/DTM_Icon</uiIconPath> -->
		<!-- 彈藥與裝填容量相關 -->
		<reloadTimer>4</reloadTimer>
		<magazineCapacity>75</magazineCapacity>
		<chargePerAmmoCount>1</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
		<!-- 射程與射界相關 -->
		<minRange>2</minRange>
		<maxRange>42</maxRange>
		<rotationSpeed>1.95</rotationSpeed>	
		<!-- 射擊相關 -->
		<warmUpTimer>0.7</warmUpTimer>
		<shotSound>ZU_Fire</shotSound>
		<projectile>Fellowtown_AA_Bullet</projectile>
		<projectileOffset>1.1</projectileOffset>		<!-- 出膛前后偏移，主要是能讓子彈能從炮口飛出去 -->
		<projectileShifting>							<!-- 出膛左右偏移，多砲管可以根據list來回切 -->
			<!-- <li>-1</li> -->
			<li>0</li>
		  </projectileShifting>
		<!-- 炮口製退動畫 -->
		<recoil>
			<distanceTotal>0.15</distanceTotal>
			<distancePerTick>0.05</distancePerTick>
			<speedMultiplierPostRecoil>0.1</speedMultiplierPostRecoil>
		</recoil>
		<!-- 射擊模式 -->
		<fireModes>
			<li>
				<shotsPerBurst>6</shotsPerBurst>
				<ticksBetweenShots>2</ticksBetweenShots>
				<ticksBetweenBursts>120</ticksBetweenBursts>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
		</fireModes>
	</Vehicles.VehicleTurretDef>

	<ThingDef ParentName="BaseBullet">
		<defName>Fellowtown_AA_Bullet</defName>
		<label>Bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
      		<damageAmountBase>27</damageAmountBase>
      		<armorPenetrationBase>0.45</armorPenetrationBase>
     		<speed>120</speed>
		</projectile>
	</ThingDef>
	


</Defs>