<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="VehicleBaseBuildable"><!-- 建筑形态的载具，基本上与BuildingDef相同-->
		<defName>BatteringRam_Blueprint</defName>
		<label>BatteringRam</label>
		<description>A truck equipped with ancient heavy cannons can collapse a building with just one shot. It consumes a lot of fuel and cannot run quickly</description>
		<designationCategory>TC_Vehicles</designationCategory>
		
		<graphicData>
			<texPath>Vehicles/BatteringRam/BatteringRam</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,6)</drawSize>
		</graphicData>
		
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>9500</WorkToBuild>
			<Flammability>0.05</Flammability>
		</statBases>
		
		<size>(2,5)</size>
		
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
		
		
		<costList>
			<EngineMedium>1</EngineMedium>
			<ComponentHeavyCasting>1</ComponentHeavyCasting>
			<ComponentWheelTire>4</ComponentWheelTire>
			<ComponentIndustrial>10</ComponentIndustrial>
			<Steel>200</Steel>
		</costList>
		
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		
		<thingToSpawn>TC_BatteringRam</thingToSpawn><!-- 建造后生成的载具Kind,这是与建筑唯一不一样的-->
		
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</Vehicles.VehicleBuildDef>
</Defs>
