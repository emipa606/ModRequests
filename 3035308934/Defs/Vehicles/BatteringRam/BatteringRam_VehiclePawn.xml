<?xml version="1.0" encoding="utf-8" ?>

<Defs>	
	<Vehicles.VehicleDef ParentName="TC_BaseVehicle">
		<defName>TC_BatteringRam</defName>
		<label>BatteringRam</label>
		<description>A truck equipped with ancient heavy cannons can collapse a building with just one shot.It consumes a lot of fuel and cannot run quickly</description>
		
		<graphicData>
			<texPath>Vehicles/BatteringRam/BatteringRam</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(3,6)</drawSize>
			<color>(130, 130, 130)</color>
			<colorTwo>(130, 30, 30)</colorTwo>
			<colorThree>(30, 15, 20)</colorThree>
		</graphicData>
		
		<fillPercent>1</fillPercent>
		
		<buildDef>BatteringRam_Blueprint</buildDef>
		
		<size>(2,5)</size>
		
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Transport</vehicleCategory>
		<techLevel>Industrial</techLevel>
		<vehicleType>Land</vehicleType>
		
		<statBases>
			<ArmorRating_Blunt>0.22</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.38</ArmorRating_Sharp>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
			<Flammability>0.5</Flammability>
			<MarketValue>2050</MarketValue>
		</statBases>
		
		<vehicleStats>
			<Mass>240</Mass>
			<MoveSpeed>10</MoveSpeed>
			<CargoCapacity>300</CargoCapacity>
			<RepairRate>0.5</RepairRate>
		</vehicleStats>
		
		
		<race>
			<baseBodySize>3.5</baseBodySize>
		</race>
		
		<properties>
			<worldSpeedMultiplier>1.2</worldSpeedMultiplier>
			<winterSpeedMultiplier>3.25</winterSpeedMultiplier>
			
			<customRoadCosts AssignDefaults = "0.3"/>
			
			<roles>
				<li>
					<key>driver</key>
					<label>Driver</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<handlingTypes>
						<li>Movement</li>
					</handlingTypes>
				</li>
				<li>
					<key>gunner</key>
					<label>Gunner</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<handlingTypes>Turret</handlingTypes>
					<turretIds>
						<li>mainTurret</li>
					</turretIds>
					<pawnRenderer>
						<layer>1</layer>
						<layerNorth>1</layerNorth>
						<layerSouth>1</layerSouth>
						<angleNorth>0</angleNorth>
						<angleEast>0</angleEast>
						<angleNorthEast>0</angleNorthEast>
						<angleSouthEast>0</angleSouthEast>
						<drawOffsetNorth>(0,0,0.15)</drawOffsetNorth>
						<drawOffsetSouth>(0,0,0.75)</drawOffsetSouth>
						<drawOffsetEast>(-0.3,0,0.55)</drawOffsetEast>

						<east>West</east>
						<west>East</west>
						<north>South</north>
						<northEast>West</northEast>
						<northWest>East</northWest>
						<south>North</south>
						<southEast>West</southEast>
						<southWest>East</southWest>
					</pawnRenderer>
				</li>
				<li>
					<key>passenger</key>
					<label>Passenger</label>
					<slots>1</slots>
				</li>
			</roles>
		</properties>
		
			
			<!-- Internal mobile Part 內部驅動部件-->
					<components>
			<li><!-- Engine 100-->
				<key>Engine</key>
				<label>Engine</label>
				<health>100</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<categories><li>MoveSpeed</li></categories>	
				<depth>Internal</depth>		
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<radius>3</radius>
						<damageDef>Bomb</damageDef>
					</li>
				</reactors>		
				<hitbox>
					<cells>
						<li>(0, 1)</li>
						<li>(0, 0)</li>
					</cells>
				</hitbox>						
			</li>
			<li><!-- LeftFrontSuspension 40-->
				<key>LeftFrontSuspension</key>
				<label>left front Suspension</label>
				<health>40</health>
				<depth>Internal</depth>			
				<hitbox>
					<cells>
						<li>(0, 2)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- RightFrontSuspension 40-->
				<key>RightFrontSuspension</key>
				<label>right front suspension</label>
				<health>40</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(1, 2)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- LeftRearSuspension 40-->
				<key>LeftRearSuspension</key>
				<label>left rear suspension</label>
				<health>40</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(0, -1)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- RightRearSuspension 40-->
				<key>RightRearSuspension</key>
				<label>right rear suspension</label>
				<health>40</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(1, -1)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- Gearbox 45-->
				<key>Gearbox</key>
				<label>gear box</label>
				<health>45</health>
				<depth>Internal</depth>
				<hitbox>
					<cells>
						<li>(0, 1)</li>
						<li>(1, 1)</li>
					</cells>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li><!-- FuelTank 40-->
				<key>FuelTank</key>
				<label>fuel tank</label>
				<health>40</health>
				<depth>Internal</depth>			
				<reactors>
					<li Class = "Vehicles.Reactor_FuelLeak"/>
				</reactors>			
				<hitbox>
					<cells>
						<li>(0, 0)</li>
						<li>(1, 0)</li>
					</cells>
				</hitbox>
			</li>
		<!-- External mobile Part 外部驅動部件-->
			<li><!-- LeftFrontWheel 30-->
				<key>LeftFrontWheel</key>
				<label>left front Wheel</label>
				<health>30</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>	
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>			
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(0, 2)</li>
					</cells>
				</hitbox>			
			</li>
			<li><!-- RightFrontWheel 30-->
				<key>RightFrontWheel</key>
				<label>right front Wheel</label>
				<health>30</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>	
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(1, 2)</li>
					</cells>
				</hitbox>
			</li>
			<li><!-- LeftRearWheel	30-->
				<key>LeftRearWheel</key>
				<label>left rear wheel</label>
				<health>30</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>	
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(0, -1)</li>
					</cells>
				</hitbox>
			</li>
			<li><!-- RightRearWheel 30-->
				<key>RightRearWheel</key>
				<label>right rear Wheel</label>
				<health>30</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>
				<armor>
					<ArmorRating_Blunt>0</ArmorRating_Blunt>
					<ArmorRating_Sharp>0</ArmorRating_Sharp>
				</armor>
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells>
						<li>(1, -1)</li>
					</cells>
				</hitbox>
			</li>
		<!-- External Shell Part 外殼部件-->
			<li><!-- EngineHood 40-->
				<key>EngineHood</key>
				<label>engine hood</label>
				<health>60</health>
				<depth>External</depth>
			</li>
			<li><!-- Roof 40-->
				<key>Roof</key>
				<label>roof</label>
				<health>60</health>
				<depth>External</depth>
			</li>
			<li><!-- LeftDoorPanel 40-->
				<key>LeftDoorPanel</key>
				<label>left door panel</label>
				<health>60</health>
				<depth>External</depth>			
				<hitbox><side>Left</side></hitbox>
			</li>
			<li><!-- RightDoorPanel 40-->
				<key>RightDoorPanel</key>
				<label>right door panel</label>
				<health>60</health>
				<depth>External</depth>
				<hitbox><side>Right</side></hitbox>
			</li>
			<li><!-- BackupTire 30-->
				<key>BackupTire</key>
				<label>backup tyre</label>
				<health>30</health>
				<depth>External</depth>
				<hitbox><side>Left</side></hitbox>
			</li>
			<li><!-- FrontBumper 30-->
				<key>FrontBumper</key>
				<label>front bumper</label>
				<health>30</health>
				<depth>External</depth>
				<hitbox><side>Front</side></hitbox>
			</li>
			<li><!-- RearBumper 25-->
				<key>RearBumper</key>
				<label>rear bumper</label>
				<health>30</health>
				<depth>External</depth>
				<hitbox><side>Back</side></hitbox>
			</li>
			
		<!-- Internal Shell Part 內裝部件-->
			<li><!-- Interior 30-->
				<key>Interior</key>
				<label>interior</label>
				<health>30</health>
				<depth>Internal</depth>
			</li>
			<li><!-- Dashboard 30-->
				<key>Dashboard</key>
				<label>dashboard</label>
				<health>30</health>
				<depth>Internal</depth>
			</li>
			<li><!-- SteeringWheel 20-->
				<key>SteeringWheel</key>
				<label>steering wheel</label>
				<health>20</health>
				<depth>Internal</depth>
			</li>
		</components>
		<comps>
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Chemfuel</fuelType>
				<leakDef>Filth_Fuel</leakDef>
				<fuelConsumptionRate>18</fuelConsumptionRate>
				<fuelConsumptionWorldMultiplier>0.5</fuelConsumptionWorldMultiplier>
				<fuelCapacity>90</fuelCapacity>
			</li>
			<li Class="Vehicles.CompProperties_VehicleTurrets">
				<turrets>
					<li>
						<turretDef>TC_BatteringRam_Turret</turretDef>
						<renderProperties>
							<north>(0, -1.2)</north>
							<south>(0, 1.4)</south>
							<east>(-1.3, 0.29)</east>
						</renderProperties>
						<gizmoLabel>main turret</gizmoLabel>
						<angleRestricted>(135,225)</angleRestricted>
						<aimPieOffset>(0, 2.55)</aimPieOffset>
						<key>mainTurret</key>
					</li>
				</turrets>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>