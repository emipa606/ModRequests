<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>BZN_VarangianHelmet</defName>
		<label>varangian helmet</label>
		<description>PLACEHOLDER</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/VarangianHelmet/VarangianHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
		</recipeMaker>
		<statBases>
			<WorkToMake>20000</WorkToMake>
			<MaxHitPoints>300</MaxHitPoints>
			<Mass>3.5</Mass>
			<StuffEffectMultiplierArmor>1.05</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>-8</ShootingAccuracyPawn>
			<PainShockThreshold>0.15</PainShockThreshold>
			<SocialImpact>0.35</SocialImpact>
		</equippedStatOffsets>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
				<li>Neck</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/VarangianHelmet/VarangianHelmet</wornGraphicPath>
			<tags>
				<li>BZN_VarangianArmor</li>
			</tags>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>


