<?xml version="1.0" encoding="utf-8"?>
<Patch>
<!-- You can Mill Metal Why not wood -->
	<Operation Class="XmlExtensions.ApplyPatch">
		<patchName>Coinage_InjectActions</patchName>
		<arguments>
			<li>ThingDef/stuffProps[categories="Metallic" or categories="Woody"]</li>
		</arguments>
	</Operation>
	<!-- can't do stony though everything breaks -->
	<Operation Class="XmlExtensions.ApplyPatch">
		<patchName>Coinage_InjectActions</patchName>
		<arguments>
			<li>ThingDef[defName="Jade"]</li>
		</arguments>
	</Operation>
	<!-- but I still wanna have stone coins -->
	
	<Operation Class="XmlExtensions.ApplyPatch">
		<patchName>Coinage_InjectActions</patchName>
		<arguments>
			<li>ThingDef[@ParentName="StoneBlocksBase"]</li>
		</arguments>
	</Operation>

</Patch>
		
		