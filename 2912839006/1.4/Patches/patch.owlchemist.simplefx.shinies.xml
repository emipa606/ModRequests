<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Simple FX: Shinies</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[@Name="CoinBase"]</xpath>
					<value>
						<li Class="SimpleFxShinies.ShinyStuff">
							<luster>0.75</luster>
							<opacity>0.5</opacity>
							<fill>1.1</fill>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>