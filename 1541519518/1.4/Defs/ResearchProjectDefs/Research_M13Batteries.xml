<Defs>

	<!--========================= Tier 4: Hi-tech research bench with multi-analyzer ===================================-->

	<ResearchProjectDef>
		<defName>M13Battery</defName>
		<tab>M13PowerSolutions</tab>
		<label>Safe Battery</label>
		<description>This research unlocks Batteries that have been upgraded to hold more charge and to not cause fires even when exposed to rain, but due to this the battery will cost more to construct and will be less efficient.</description>
		<baseCost>5000</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>Batteries</li>
		</prerequisites>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
			<li>MultiAnalyzer</li>
		</requiredResearchFacilities>
		<researchViewX>4</researchViewX>
		<researchViewY>0</researchViewY>
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>M13PowerConduit</defName>
		<tab>M13PowerSolutions</tab>
		<label>Safe Power Conduits</label>
		<description>This research unlocks Power Conduits that do not short circuit or explode.</description>
		<baseCost>5000</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>Batteries</li>
		</prerequisites>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
			<li>MultiAnalyzer</li>
		</requiredResearchFacilities>
		<researchViewX>4</researchViewX>
		<researchViewY>1</researchViewY>
	</ResearchProjectDef>
	
</Defs>
