<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="Bombadier_MakeStainedWoodBase" Abstract="True">
		<jobString>Wood Staining</jobString>
		<workAmount>120</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<targetCountAdjustment>20</targetCountAdjustment>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
	</RecipeDef>
	
	<RecipeDef ParentName="Bombadier_MakeStainedWoodBase">
		<defName>Make_DarkStainedWood</defName>
		<label>make dark-stained wood</label>
		<description>Apply dark wood stain to wood logs.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<DarkWoodLog>40</DarkWoodLog>
		</products>
	</RecipeDef>
	
