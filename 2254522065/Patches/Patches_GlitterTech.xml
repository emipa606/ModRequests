<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Glitter Tech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DynChair"]/graphicData/drawSize</xpath>
					<value>
						<drawSize>(1,1)</drawSize>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="ambTable"]/graphicData/drawSize</xpath>
					<value>
						<drawSize>(1,2)</drawSize>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
</Patch>