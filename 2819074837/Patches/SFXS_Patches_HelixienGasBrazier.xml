<?xml version="1.0" encoding="utf-8"?>
<Patch>
			<!-- Helixien Gas Brazier -->
				<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="HelixienGasBrazier"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName="HelixienGasBrazier"]/comps</xpath>
                    <value>
                        <li Class="Flecker.CompProperties_Smoker">
							<particleSize>1.5</particleSize>
							<indoorAlt>Owl_SmokeIndoors</indoorAlt>
						</li>
					</value>
		</match>
				</Operation>
				
			<!-- Helixien Gas Darklight Brazier -->
				<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="HelixienGasDarklightBrazier"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName="HelixienGasDarklightBrazier"]/comps</xpath>
                    <value>
                        <li Class="Flecker.CompProperties_Smoker">
							<particleSize>1.5</particleSize>
							<indoorAlt>Owl_SmokeIndoors</indoorAlt>
						</li>
					</value>
		</match>
				</Operation>
			
</Patch>