<?xml version="1.0" encoding="utf-8"?>
<Patch>
			<!-- Ideology -->
				<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="Darktorch"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName="Darktorch"]/comps</xpath>
				<value>
					<li Class="Flecker.CompProperties_Smoker">
						<fleckDef>Owl_Vapor</fleckDef>
						<particleSize>0.4</particleSize>
					</li>
				</value>
		</match>
				</Operation>
	
				<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="DarktorchFungus"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName="DarktorchFungus"]/comps</xpath>
				<value>
					<li Class="Flecker.CompProperties_Smoker">
						<fleckDef>Owl_Vapor</fleckDef>
						<particleSize>0.4</particleSize>
					</li>
				</value>
		</match>
				</Operation>
				
			<!-- Royalty with Ideology -->
				<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="DarklightBrazier"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName="DarklightBrazier"]/comps</xpath>
                    <value>
                        <li Class="Flecker.CompProperties_Smoker">
							<particleSize>1.5</particleSize>
							<indoorAlt>Owl_SmokeIndoors</indoorAlt>
						</li>
					</value>
		</match>
				</Operation>
	
</Patch>