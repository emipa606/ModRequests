<Defs>

  <!-- New Terrain -->
	<TerrainDef Name="AC_TerrainBase" Abstract="True">
		<renderPrecedence>340</renderPrecedence>
    <edgeType>FadeRough</edgeType>
		<pathCost>2</pathCost>
		<affordances>
			<li>Light</li>
      <li>Medium</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
    <generatedFilth>Filth_Dirt</generatedFilth>
		<takeFootprints>True</takeFootprints>
    <tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
	</TerrainDef>

