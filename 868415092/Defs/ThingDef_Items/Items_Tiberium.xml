	<ThingDef ParentName="MakeableDrugPillBase">
		<defName>TiberAdd</defName>
		<label>Tiberadd</label>
		<description>This drug helps pawns dependant on Tiberium radiation. After ingesting it will fill up their need.</description>
		<graphicData>
			<texPath>Item/TiberAdd</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<statBases>
			<WorkToMake>725</WorkToMake>
			<MarketValue>250</MarketValue>
			<Mass>0.01</Mass>
		</statBases>
		<techLevel>Industrial</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
			<li Class="IngestionOutcomeDoer_GiveHediff">
			  <hediffDef>TiberAddHediff</hediffDef>
			  <severity>1.0</severity>
			</li>
		  </outcomeDoers>
		</ingestible>
		<recipeMaker>
			<researchPrerequisite>TiberiumKnowledge</researchPrerequisite>
			<recipeUsers>
				<li>TiberiumResearchCraftingBench</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<TiberiumPlantGrass>3</TiberiumPlantGrass>
			<TiberiumPlantShroom>1</TiberiumPlantShroom>
			<Neutroamine>5</Neutroamine>
		</costList>
				<comps>
			<li Class="CompProperties_Drug">
			<listOrder>1074</listOrder>
				<overdoseSeverityOffset>
					<min>0.08</min>
					<max>0.14</max>
				</overdoseSeverityOffset>
			</li>
		</comps>
		<researchPrerequisites>
			<li>TiberiumKnowledge</li>
		</researchPrerequisites>
