<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<BiomeDef>
		<defName>TiberiumGlacierSea</defName>
		<label>Tiberium Glacier Sea</label>
		<description>This ocean has been converted almost completely into Tiberium.</description>
		<workerClass>BiomeWorker_Ocean</workerClass>
		<canBuildBase>false</canBuildBase>
		<allowRoads>false</allowRoads>
		<allowRivers>false</allowRivers>
		<hasVirtualPlants>false</hasVirtualPlants>
		<texture>World/Biomes/TiberiumGlacier</texture>
		<impassable>true</impassable>
	</BiomeDef>

  <BiomeDef>
    <defName>TiberiumRedZone</defName>
    <label>Tiberium Red Zone</label>
    <description>This biome has been under such terraforming influence that it barely supports any usual life forms. Tiberium has covered most of it's surface and Fiends roam the crystalline fields.</description>
    <workerClass>TiberiumRim.BiomeWorker_TiberiumRedZone</workerClass>
    <animalDensity>1.25</animalDensity>
    <plantDensity>0.5</plantDensity>
    <pathCost_spring>1650</pathCost_spring>
    <pathCost_summer>1650</pathCost_summer>
    <pathCost_fall>1650</pathCost_fall>
    <pathCost_winter>1650</pathCost_winter>
    <texture>World/Biomes/TiberiumRedZone</texture>
    <soundsAmbient>
      <li>AmbientNight_Tiberium</li>
      <li>AmbientDay_Tiberium</li>
    </soundsAmbient>
    <diseaseMtbDays>45</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Malaria</diseaseInc>
        <commonality>25</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SleepingSickness</diseaseInc>
        <commonality>25</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>50</commonality>
      </li>
    </diseases>
    <terrainsByFertility>
      <li>
        <terrain>TiberiumSoilPod</terrain>
        <min>-999</min>
        <max>0.87</max>
      </li>
      <li>
        <terrain>TiberiumSoilGreen</terrain>
        <min>0.87</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.1</perlinFrequency>
        <thresholds>
          <li>
            <terrain>TiberiumMossyTerrainGreen</terrain>
            <min>25</min>
            <max>125</max>
          </li>
		  <li>
            <terrain>TiberiumSoilBlue</terrain>
            <min>25</min>
            <max>125</max>
          </li>
          <li>
            <terrain>TiberiumSandGreen</terrain>
            <min>35</min>
            <max>135</max>
          </li>
          <li>
            <terrain>TiberiumWater</terrain>
            <min>45</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
      <li>
        <perlinFrequency>0.05</perlinFrequency>
        <thresholds>
          <li>
            <terrain>SoilRich</terrain>
            <min>0.64</min>
            <max>1</max>
          </li>
          <li>
            <terrain>Soil</terrain>
            <min>1</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <TiberiumClear>15</TiberiumClear>
	  <Clear>5</Clear>
      <Fog>10</Fog>
      <FoggyRain>5</FoggyRain>
      <SnowGentle>1</SnowGentle>
	  <IonStormWeather>0.2</IonStormWeather>
    </baseWeatherCommonalities>
    <wildPlants>
			<TiberiumGrass>0.1</TiberiumGrass>
			<TiberiumTree>0.03</TiberiumTree>
			<TiberiumBush>0.05</TiberiumBush>
			<TiberiumShroom>0.05</TiberiumShroom>
			<TiberiumGreen>10</TiberiumGreen>
			<TiberiumBlue>0.25</TiberiumBlue>
			<TiberiumPod>0.25</TiberiumPod>
			<TiberiumRed>0.01</TiberiumRed>
		</wildPlants>
    <wildAnimals>
			<Visceroid_TBI>1</Visceroid_TBI>
			<Tiffalo_TBI>0.3</Tiffalo_TBI>
			<Spiner_TBI>0.5</Spiner_TBI>
			<Boomfiend_TBI>0.5</Boomfiend_TBI>
			<TiberiumFiend_TBI>0.5</TiberiumFiend_TBI>
			<Tibscarab_TBI>1</Tibscarab_TBI>
			<SmallTiberiumFiend_TBI>0.5</SmallTiberiumFiend_TBI>
			<Crawler_TBI>0.25</Crawler_TBI>
			<BigTiberiumFiend_TBI>0.25</BigTiberiumFiend_TBI>
			<Thrimbo_TBI>0.03</Thrimbo_TBI>
			<TiberiumTerror_TBI>0.015</TiberiumTerror_TBI>
			<Amalgamation_TBI>0.015</Amalgamation_TBI>
		</wildAnimals>
   <allowedPackAnimals>
      <li>Tiffalo_TBI</li>
      <li>Visceroid_TBI</li>
	  <li>Boomfiend_TBI</li>
	  <li>Tibscarab_TBI</li>	  
    </allowedPackAnimals>
  </BiomeDef>

</Defs>