<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--========================= Green Holo Door (1x1) =============================-->

  <ThingDef ParentName="DoorBase">
    <defName>Green_Holo_Door</defName>
    <label>green holo door (1x1)</label>
    <description>Divides rooms. Powered and opens quickly. Allows light through as well.</description>
    <designatorDropdown>StandingLampColored</designatorDropdown>
    <statBases>
      <WorkToBuild>900</WorkToBuild>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Door/Green_Holo_Door_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Door/Green_Holo_Door_MenuIcon</uiIconPath>
    <costList>
      <Plasteel>10</Plasteel>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>80</basePowerConsumption>
      </li>
      
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(0,255,76,0)</glowColor>
      </li>

      <li Class="CompProperties_ProjectileInterceptor">
        <radius>2</radius>
        <interceptAirProjectiles>true</interceptAirProjectiles>
        <color>(0,255,76)</color>
        <reactivateEffect>MortarShieldGenerator_Reactivate</reactivateEffect>
        <activeSound>MortarShield_Ambience</activeSound>
        <disarmedByEmpForTicks>850</disarmedByEmpForTicks>
        <chargeIntervalTicks>600000</chargeIntervalTicks>
        <chargeDurationTicks>8000</chargeDurationTicks>
      </li>
    </comps>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>Autodoors</li>
      <li>ColoredLights</li>
      <li>ShieldBelt</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>9</constructionSkillPrerequisite>
  </ThingDef>

