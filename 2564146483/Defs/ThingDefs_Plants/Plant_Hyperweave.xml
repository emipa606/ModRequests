<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="PlantBaseHyper" Abstract="True">
		<category>Plant</category>
		<thingClass>Plant</thingClass>
		<altitudeLayer>LowPlant</altitudeLayer>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Flammability>0.8</Flammability>
		</statBases>
		<tickerType>Long</tickerType>
		<neverMultiSelect>True</neverMultiSelect>
		<drawerType>MapMeshOnly</drawerType>
		<pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
		<graphicData>
			<shaderType>CutoutPlant</shaderType>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible>
			<preferability>RawBad</preferability>
			<foodType>Plant</foodType>
		</ingestible>
		<plant>
			<neverBlightable>true</neverBlightable>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>2.0</fertilitySensitivity>
			<soundHarvesting>Harvest_Standard</soundHarvesting>
			<soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
			<harvestWork>290</harvestWork>
			<sowWork>260</sowWork>
			<topWindExposure>0.1</topWindExposure>
			<visualSizeRange>
				<min>0.1</min>
				<max>0.4</max>
			</visualSizeRange>
			<cavePlant>false</cavePlant>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBaseHyper">
		<defName>hyperweave_plant</defName>
		<label>Hyperweave flower</label>
		<description>A beautiful lab-grown flower that yields fine blue durable fibers. These are used to make reliable and rare cloth. Extremely sensitive to ground fertility!</description>
		<statBases>
			<Beauty>69</Beauty>
			<Nutrition>0.1</Nutrition>
			<MaxHitPoints>200</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Plants/PlantH</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<plant>
			<fertilitySensitivity>1.5</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>Hyperweave</harvestedThingDef>
			<harvestYield>7</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<sowMinSkill>12</sowMinSkill>
			<sowResearchPrerequisites>
				<li>Hyperweave_Plantation</li>
			</sowResearchPrerequisites>
			<topWindExposure>0.1</topWindExposure>
			<growDays>24</growDays>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.1</max>
			</visualSizeRange>
		</plant>
	</ThingDef>
</Defs>