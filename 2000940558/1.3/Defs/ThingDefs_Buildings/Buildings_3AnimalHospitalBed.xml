<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="StrawBedBase" Name="AnimalHospitalBedBase" Abstract="True">
        <uiIconPath>Things/Buildings/AnimalHospitalBed/AnimalHospitalBedUI</uiIconPath>
        <building>
            <bed_healPerDay>10</bed_healPerDay>
        </building>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <BedRestEffectiveness>1</BedRestEffectiveness>
            <Comfort>0.80</Comfort>
            <ImmunityGainSpeedFactor>1.11</ImmunityGainSpeedFactor>
            <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
            <SurgerySuccessChanceFactor>1.1</SurgerySuccessChanceFactor>
        </statBases>
        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>VitalsMonitor</li>
                </linkableFacilities>
            </li>
        </comps>
        <researchPrerequisites>
            <li>HospitalBed</li>
        </researchPrerequisites>
        <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
        <techLevel>Industrial</techLevel>
        <designatorDropdown>ZP_AnimalHospitalBed</designatorDropdown>
    </ThingDef>
    <ThingDef ParentName="AnimalHospitalBedBase">
        <defName>AnimalHospitalBedSmall</defName>
        <label>動物用-医療ベッド(1×1)</label>
        <description>怪我した動物のために考えられた医療用ベッド。鶏やうさぎなどの小型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalHospitalBed/AnimalHospitalBed</texPath>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <costList>
            <Cloth>20</Cloth>
            <Steel>40</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <statBases>
            <WorkToBuild>1600</WorkToBuild>
            <Mass>25</Mass>
        </statBases>
        <building>
            <bed_maxBodySize>0.55</bed_maxBodySize>
        </building>
    </ThingDef>
    <ThingDef ParentName="AnimalHospitalBedBase">
        <defName>AnimalHospitalBed</defName>
        <label>動物用-医療ベッド(2×2)</label>
        <description>怪我した動物のために考えられた医療用ベッド。ハスキーからマッファローまでの中型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalHospitalBed/AnimalHospitalBed</texPath>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <costList>
            <Cloth>30</Cloth>
            <Steel>40</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <statBases>
            <WorkToBuild>1800</WorkToBuild>
            <Mass>35</Mass>
        </statBases>
        <building>
            <bed_maxBodySize>2.1</bed_maxBodySize>
        </building>
    </ThingDef>
    <ThingDef ParentName="AnimalHospitalBedBase">
        <defName>AnimalHospitalBedBig</defName>
        <label>動物用-医療ベッド(3×3)</label>
        <description>怪我した動物のために考えられた医療用ベッド。スランボやゾウなどの大型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalHospitalBed/AnimalHospitalBed</texPath>
            <drawSize>(3,3)</drawSize>
        </graphicData>
        <costList>
            <Cloth>40</Cloth>
            <Steel>40</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
