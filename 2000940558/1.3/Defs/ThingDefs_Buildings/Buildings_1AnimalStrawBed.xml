<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="StrawBedBase" Name="AnimalStrawBedBase" Abstract="True">
        <uiIconPath>Things/Buildings/AnimalBed_wara/AnimalBed_waraUI</uiIconPath>
        <building>
            <bed_healPerDay>4</bed_healPerDay>
        </building>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <statBases>
            <Flammability>1.2</Flammability>
            <BedRestEffectiveness>1</BedRestEffectiveness>
            <Comfort>0.75</Comfort>
            <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
            <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
        </statBases>
        <techLevel>Neolithic</techLevel>
        <designatorDropdown>ZP_AnimalStrawBed</designatorDropdown>
    </ThingDef>
    <ThingDef ParentName="AnimalStrawBedBase">
        <defName>AnimalStrawBedSmall</defName>
        <label>動物用藁寝床(1×1)</label>
        <description>動物用の藁ベッド。鶏やうさぎなどの小型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalBed_wara/AnimalBed_wara</texPath>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <costList>
            <Hay>40</Hay>
        </costList>
        <statBases>
            <MaxHitPoints>50</MaxHitPoints>
            <WorkToBuild>100</WorkToBuild>
            <Mass>4</Mass>
        </statBases>
    </ThingDef>
    <ThingDef ParentName="AnimalStrawBedBase">
        <defName>AnimalStrawBed</defName>
        <label>動物用藁寝床(2×2)</label>
        <description>動物用の藁ベッド。ハスキーからマッファローまでの中型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalBed_wara/AnimalBed_wara</texPath>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <costList>
            <Hay>50</Hay>
        </costList>
        <statBases>
            <MaxHitPoints>60</MaxHitPoints>
            <WorkToBuild>200</WorkToBuild>
            <Mass>6</Mass>
        </statBases>
    </ThingDef>
    <ThingDef ParentName="AnimalStrawBedBase">
        <defName>AnimalStrawBedBig</defName>
        <label>動物用藁寝床(3×3)</label>
        <description>動物用の藁ベッド。スランボやゾウなどの大型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalBed_wara/AnimalBed_wara</texPath>
            <drawSize>(3,3)</drawSize>
        </graphicData>
        <costList>
            <Hay>60</Hay>
        </costList>
        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <WorkToBuild>300</WorkToBuild>
            <Mass>8</Mass>
        </statBases>
    </ThingDef>
</Defs>
