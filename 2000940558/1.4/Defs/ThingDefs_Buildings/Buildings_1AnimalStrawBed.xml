<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AnimalStrawBedBase">
        <defName>AnimalStrawBedSmall</defName>
        <label>動物用藁寝床(1×1)</label>
        <description>動物用の藁ベッド。鶏やうさぎなどの小型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalBed_wara/AnimalBed_wara</texPath>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <costList>
            <Hay>40</Hay>
        </costList>
        <building>
            <bed_maxBodySize>0.55</bed_maxBodySize>
        </building>
        <statBases>
            <WorkToBuild>100</WorkToBuild>
            <Mass>4</Mass>
        </statBases>
    </ThingDef>
    <ThingDef ParentName="AnimalStrawBedBase">
        <defName>AnimalStrawBed</defName>
        <label>動物用藁寝床(2×2)</label>
        <description>動物用の藁ベッド。ハスキーからマッファローまでの中型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalBed_wara/AnimalBed_wara</texPath>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <costList>
            <Hay>50</Hay>
        </costList>
        <statBases>
            <WorkToBuild>200</WorkToBuild>
            <Mass>6</Mass>
        </statBases>
        <building>
            <bed_maxBodySize>2.4</bed_maxBodySize>
        </building>
    </ThingDef>
    <ThingDef ParentName="AnimalStrawBedBase">
        <defName>AnimalStrawBedBig</defName>
        <label>動物用藁寝床(3×3)</label>
        <description>動物用の藁ベッド。スランボやゾウなどの大型動物に最適です。</description>
        <graphicData>
            <texPath>Things/Buildings/AnimalBed_wara/AnimalBed_wara</texPath>
            <drawSize>(3,3)</drawSize>
        </graphicData>
        <costList>
            <Hay>60</Hay>
        </costList>
        <statBases>
            <WorkToBuild>300</WorkToBuild>
            <Mass>8</Mass>
        </statBases>
    </ThingDef>
</Defs>