<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  

  <!--========== Basic leathers ============-->


  <ThingDef ParentName="LeatherBase">
    <defName>Leather_RacoonDog</defName>
    <label>Racoon dog fur</label>
       <description>A soft furry pelt harvested from a racoon dog, very beautiful and valuable, unfortunatelly racoon dogs don't give much. Sometimes sold as "faux-fur" by disonest merchants.</description>
    <graphicData>
      <color>(155,144,127)</color>
    </graphicData>
    <statBases>
      <MarketValue>3.0</MarketValue>
      <StuffPower_Armor_Sharp>1</StuffPower_Armor_Sharp>
      <StuffPower_Insulation_Cold>24</StuffPower_Insulation_Cold>
    </statBases>
    <stuffProps>
      <color>(155,144,127)</color>
      <commonality>0.075</commonality>
      <statFactors>
        <Beauty>1.7</Beauty>
        <MarketValue>3.0</MarketValue>
      </statFactors>
    </stuffProps>
  </ThingDef>

  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Jackal</defName>
    <label>Jackal pelt</label>
       <description>A soft furry pelt harvested from a jackal, worse at insualition than wolf or fox leather. Tribals see them as valuable for religious and cultural reasons.</description>
    <graphicData>
      <color>(83,75,62)</color>
    </graphicData>
    <statBases>
      <MarketValue>3.0</MarketValue>
      <StuffPower_Armor_Sharp>1</StuffPower_Armor_Sharp>
      <StuffPower_Insulation_Cold>12</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>12</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(83,75,62)</color>
      <commonality>0.075</commonality>
      <statFactors>
<SocialImpact>0.15</SocialImpact>
      </statFactors>
    </stuffProps>
  </ThingDef>

<ThingDef ParentName="LeatherBase">
    <defName>Leather_ExoticDog</defName>
    <label>Exotic dog leather</label>
     <description>An exotic pelt from an peculiar canid. A bit more expensive than dog leather due to it's rarier source.</description>
    <graphicData>
      <color>(100,45,0)</color>
    </graphicData>
    <statBases>
      <MarketValue>2.5</MarketValue>
    </statBases>
    <stuffProps>
      <color>(100,45,0)</color>
      <commonality>0.075</commonality>
    </stuffProps>
  </ThingDef>


</Defs>
