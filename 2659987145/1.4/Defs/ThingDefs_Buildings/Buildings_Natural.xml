<Defs>

  



  <ThingDef ParentName="RockBase">
    <defName>MineableTisnit</defName>
    <label>tisnite deposit</label>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(154,122,73)</color>
      <colorTwo>(239,152,73)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>4500</MaxHitPoints>
    </statBases>
    <description>Tisnite deposit. Tisnite is a very strong and unflammable metal.</description>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>Tisnit</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.1</mineableScatterCommonality>
	  <mineableScatterLumpSizeRange>7~12</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
  
