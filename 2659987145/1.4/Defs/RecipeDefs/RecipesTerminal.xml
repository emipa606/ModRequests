<RecipeDef>
    <defName>ActivateAstroCoin</defName>
    <label>Activate Astro-coins x5</label>
    <description>Activate astro-coin for its subsequent use in the terminal. Tasks for obtaining buildings and equipment of the "Mechalit" factions will appear after the corresponding research.</description>
    <jobString>Activating Astro-coins</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>ResroptLaser</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>20</workAmount>
		<recipeUsers>
			<li>MechaTerminal</li>
		</recipeUsers>
    <targetCountAdjustment>5</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>McoinB</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
	        <li>
        <filter>
          <thingDefs>
            <li>Energx</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
	        <li>
        <filter>
          <thingDefs>
            <li>Vilanit</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>McoinB</li>
		<li>Energx</li>
		 <li>Vilanit</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Mcoin>5</Mcoin>
    </products>
    <workSkill>Intellectual</workSkill>
  </RecipeDef>
  
