<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>WW_Adrenaline</defName>
    <label>Adrenaline</label>
    <description>Strong adrenaline can quickly restore consciousness to patients, but after more than ten hours, the injected person will fall into a coma.</description>
    <possessionCount>10</possessionCount>
    <descriptionHyperlinks>
      <HediffDef>AdrenalineExcitation</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Medic/WW_Adrenaline</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>18</MarketValue>
      <Mass>0.005</Mass>
      <Flammability>0.7</Flammability>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>AdrenalineExcitation</hediffDef>
          <severity>2.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>GoJuiceProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>5</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>AdrenalineExcitation</defName>
    <label>Adrenaline excitation</label>
    <labelNoun>Adrenaline excitation</labelNoun>
    <description>The adrenaline injected excites the nerves, increases blood pressure, and quickly restores consciousness. This effect will last for about a day, but after the excitement effect, the injected person will enter a state of exhaustion.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <maxSeverity>2</maxSeverity>
    <initialSeverity>2</initialSeverity>
    <isBad>false</isBad>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <label>Exhaustion syndrome</label>
        <vomitMtbDays>0.75</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
      <li>
	    <painOffset>-0.5</painOffset>
        <minSeverity>1</minSeverity>
        <label>Adrenaline excitation</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.55</offset>
			 </li>
			 <li>
			<capacity>Moving</capacity>
            <offset>0.40</offset>
          </li>
		  <li>
			<capacity>Moving</capacity>
            <offset>0.40</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2</severityPerDay>
      </li>
    </comps>
  </HediffDef>
</Defs>