<Defs>

  <ThingDef ParentName="BaseWeaponTurret">
    <defName>762MG</defName>
    <label>7.62MG</label>
    <description>7.62mm machine gun</description>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <uiIconPath>Weapons/WW_Mg15</uiIconPath>
    <graphicData>
      <texPath>Weapons/WW_None</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.72</AccuracyTouch>
      <AccuracyShort>0.63</AccuracyShort>
      <AccuracyMedium>0.64</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>3.2</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>10</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_LMG</defaultProjectile>
        <range>29.9</range>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <burstShotCount>12</burstShotCount>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <defaultCooldownTime>3</defaultCooldownTime>
      </li>
    </verbs>
  </ThingDef>

  <ThingDef ParentName="BaseGun">
    <defName>75mmCannon</defName>
    <label>75mm Cannon</label>
	<tickerType>Normal</tickerType>
    <description>75mm Cannon</description>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
    <uiIconPath>Weapons/WW_None</uiIconPath>
    <graphicData>
      <texPath>Weapons/WW_None</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>1400</WorkToMake>
      <Mass>24</Mass>
      <AccuracyTouch>0.6</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.95</AccuracyLong>
      <RangedWeapon_Cooldown>2.7</RangedWeapon_Cooldown>
    </statBases>
      <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_75mmCannon</defaultProjectile>
        <forcedMissRadius>2.9</forcedMissRadius>
        <warmupTime>2.5</warmupTime>
        <ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>28.9</range>
        <ticksBetweenBurstShots>20</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
	    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
      <li Class="CompProperties_Biocodable" />
    </comps>
    <weaponTags>
      <li>75mmCannon</li>
    </weaponTags>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>4</ShootingAccuracyPawn>
    </equippedStatOffsets>
  </ThingDef>
  
 <ThingDef ParentName="BaseBullet">
    <defName>Bullet_75mmCannon</defName>
    <label>rocket</label>
    <graphicData>
      <texPath>Weapons/WW_75mm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionRadius>2.9</explosionRadius>
      <speed>50</speed>
    </projectile>
  </ThingDef>

 <ThingDef ParentName="LightMechanoidGunRanged">
    <defName>WW_Wex</defName>
    <label>Wex</label>
    <description>A burst-oriented flamethrower.</description>
    <graphicData>
      <texPath>Weapons/WW_Wex</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  	  <drawSize>1.5</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>1000</MarketValue>
      <Mass>1.5</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.48</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.26</AccuracyLong>
      <RangedWeapon_Cooldown>3.2</RangedWeapon_Cooldown>      
    </statBases>
    <weaponTags>
      <li>WW_Wex</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_SpewFire</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>0</warmupTime>
        <range>6.9</range>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <burstShotCount>6</burstShotCount>
        <soundCast>Shot_MiniFlameblaster</soundCast>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

</Defs>