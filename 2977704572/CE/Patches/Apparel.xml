<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- ========== Armor vest ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>3</WornBulk>
			<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>125</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/statBases/Mass</xpath>
		<value>
			<Mass>11</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]</xpath>
		<value>
		  <li Class="CombatExtended.PartialArmorExt">
			  <stats>
				  <li>
					<ArmorRating_Sharp>0.60</ArmorRating_Sharp>
					<parts>
						<li>Neck</li>
						<li>Shoulder</li>
					</parts>
				  </li>
				  <li>
					<ArmorRating_Blunt>0.60</ArmorRating_Blunt>
					<parts>
						<li>Neck</li>
						<li>Shoulder</li>
					</parts>
				  </li>
			  </stats>
		  </li>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/statBases/ArmorRating_Sharp</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/statBases/ArmorRating_Blunt</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/statBases/ArmorRating_Heat</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/equippedStatOffsets/MoveSpeed</xpath>
	</Operation>

	<!-- Change recipe to stuffed -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]</xpath>
		<value>
			<costStuffCount>90</costStuffCount>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]</xpath>
		<value>
			<stuffCategories>
				<li>Steeled</li>
			</stuffCategories>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/recipeMaker/unfinishedThingDef</xpath>
		<value>
			<unfinishedThingDef>UnfinishedSteeledTechArmor</unfinishedThingDef>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="WW_Uniform"]/costList/Steel</xpath>
	</Operation>


</Patch>
