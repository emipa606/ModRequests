  <RecipeDef>
    <defName>PJ_MakeCrystal_Red</defName>
    <label>infuse synthetic crystal (red)</label>
    <description>Takes a lightsaber crystal and infuses it with the power of the dark side of the force.</description>
    <jobString>Infusing crystal</jobString>
    <workAmount>8500</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <unfinishedThingDef>PJ_UnfinishedRedC</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>PJ_KyberCrystals</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>PJ_KyberCrystals</li>
        <li>StoneBlocks</li>
      </categories>
      <disallowedThingDefs>
        <li>PJ_KyberCrystalRed</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
    <products>
      <PJ_KyberCrystalRed>1</PJ_KyberCrystalRed>
    </products>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>
