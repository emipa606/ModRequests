<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <!-- NanomachineCore -->
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>NanomachineCorePower</defName>
        <hediffClass>MGRRimworld.MGRHediffs.Hediff_NanomachinePower</hediffClass>
        <label>Power of the nanomachine core</label>
        <description>Nanomachine core power</description>
        <initialSeverity>1</initialSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>180000</disappearsAfterTicks>
                <!-- 3 days -->
                <showRemainingTime>true</showRemainingTime>
            </li>
			<!--
            <li Class="MGRRimworld.MGRComps.HediffCompProperties_AdjustPower">
				<stage>
					<minSeverity>1</minSeverity>
					<label>minor</label>
					<capMods>
						<li>
							<capacity>Consciousness</capacity>
							<offset>0.1</offset>
						</li>
					</capMods>
				</stage>
			</li>
			-->
        </comps>
        <stages>
            <li>
                <minSeverity>1</minSeverity>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Eating</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <offset>0.1</offset>
                    </li>
                </capMods>
			</li>
        </stages>
    </HediffDef>
