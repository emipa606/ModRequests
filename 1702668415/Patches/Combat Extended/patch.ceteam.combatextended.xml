<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Owl_Iron"]/stuffProps/categories</xpath>
					<value>
						<li>Metallic_Weapon</li>
					</value>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ThingDef[defName="Owl_Iron"]/statBases/*[
						name()="Bulk" or 
						name()="MeleeCounterParryBonus" or 
						name()="StuffPower_Armor_Sharp" or 
						name()="StuffPower_Armor_Blunt" or 
					name()="StuffPower_Armor_Heat"]</xpath>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Owl_Iron"]/statBases</xpath>
					<value>
						<Bulk>0.03</Bulk>
						<MeleeCounterParryBonus>1.3</MeleeCounterParryBonus>
						<StuffPower_Armor_Sharp>0.89</StuffPower_Armor_Sharp>
						<StuffPower_Armor_Blunt>1.25</StuffPower_Armor_Blunt>
						<StuffPower_Armor_Heat>0</StuffPower_Armor_Heat>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>Defs/ThingDef[defName="Owl_Iron"]/stuffProps/statFactors[not(Mass)]</xpath>
					<value>
						<Mass>1.25</Mass>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>Defs/ThingDef[defName="Owl_Iron"]/stuffProps/statFactors[not(MeleePenetrationFactor)]</xpath>
					<value>
						<MeleePenetrationFactor>0.95</MeleePenetrationFactor>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>	