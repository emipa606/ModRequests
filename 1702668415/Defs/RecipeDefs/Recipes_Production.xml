<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>Owl_RefineSteel</defName>
		<label>refine steel</label>
		<description>Make a batch of steel using raw iron ore.</description>
		<jobString>Refining steel from iron ore.</jobString>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<workAmount>1015</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<targetCountAdjustment>15</targetCountAdjustment>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs />
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Owl_Iron</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Owl_Iron</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Steel>20</Steel>
		</products>
		<recipeUsers>
			<li>Owl_Bloomery</li>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>
	<RecipeDef>
		<defName>Owl_RefineSteelBulk</defName>
		<label>refine steel x 4</label>
		<description>Make four batches of steel using raw iron ore.</description>
		<jobString>Refining steel from iron ore.</jobString>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<workAmount>4050</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<targetCountAdjustment>15</targetCountAdjustment>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs />
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Owl_Iron</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Owl_Iron</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Steel>80</Steel>
		</products>
		<recipeUsers>
			<li>Owl_Bloomery</li>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>
</Defs>
