<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>MakeNeutroamine</defName>
    <label>make neutroamine</label>
    <description>Make neutroamine from herbal medicine.</description>
    <jobString>Making neutroamine.</jobString>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <workAmount>1500</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MedicineHerbal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Neutroamine>1</Neutroamine>
    </products>
    <skillRequirements>
        <Intellectual>8</Intellectual>
    </skillRequirements>
    <workSkill>Intellectual</workSkill>
    <researchPrerequisite>DrugProduction</researchPrerequisite>
    <recipeUsers>
        <li>DrugLab</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef>
    <defName>MakeBulkNeutroamine</defName>
    <label>make neutroamine in bulk</label>
    <description>Make neutroamine from herbal medicine in bulk.</description>
    <jobString>Making neutroamine in bulk.</jobString>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <workAmount>10000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MedicineHerbal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Neutroamine>10</Neutroamine>
    </products>
    <skillRequirements>
        <Intellectual>10</Intellectual>
    </skillRequirements>
    <workSkill>Intellectual</workSkill>
    <researchPrerequisite>DrugProduction</researchPrerequisite>
    <recipeUsers>
        <li>DrugLab</li>
    </recipeUsers>
  </RecipeDef>

</Defs>
