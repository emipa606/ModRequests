<Defs>


	<RecipeDef>
		<defName>Make_Paper</defName>
		<label>Produce Paper</label>
		<description>Make Paper</description>
		<jobString>Making paper</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workAmount>750</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Interact_Research</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>100</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
					<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
				<li>Cloth</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Fox_Paper>150</Fox_Paper>
		</products>
		<skillRequirements>
			<Crafting>2</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>

