<Defs>

<!-- ======= FN Minimi ======= -->
	<RecipeDef>
    <defName>CPCraft_FNMinimi_Weapon</defName>
    <label>make FN Minimi</label>
    <description>make an FN Minimi.</description>
    <jobString>making an FN Minimi.</jobString>
    <workSkill>Crafting</workSkill>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
	<workAmount>32000</workAmount>
	<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
	<recipeUsers>
      <li>RNBench_Heavy</li>
    </recipeUsers>
    <ingredients>
	  		<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
    </ingredients>
		<products>
			<RNGun_FNMinimi>1</RNGun_FNMinimi> <!-- === PRODUCT === -->
		</products>
	 <researchPrerequisite>GasOperation</researchPrerequisite>
	<skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
  </RecipeDef>
  
