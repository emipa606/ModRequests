  <!-- ======= AK12 ======= -->
	<RecipeDef>
    <defName>CPCraft_AK12_Weapon</defName>
    <label>make AK12</label>
    <description>make an AK12.</description>
    <jobString>making an AK12.</jobString>
    <workSkill>Crafting</workSkill>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
	<workAmount>40000</workAmount>
	<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
	<recipeUsers>
      <li>RNBench_Rifleman</li>
    </recipeUsers>
    <ingredients>
	  		<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>9</count>
			</li>
    </ingredients>
		<products>
			<RNGun_AK12AR>1</RNGun_AK12AR> <!-- === PRODUCT === -->
		</products>
	 <researchPrerequisite>PrecisionRifling</researchPrerequisite>
	<skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
  </RecipeDef>
  
