<Defs>

<!-- ======= Desert Eagle ======= -->
	<RecipeDef>
    <defName>CPCraft_DesertEagle_Weapon</defName>
    <label>make Desert Eagle</label>
    <description>make an Desert Eagle.</description>
    <jobString>making an Desert Eagle.</jobString>
    <workSkill>Crafting</workSkill>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
	<workAmount>5000</workAmount>
	<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
	<recipeUsers>
      <li>RNBench_Heavy</li>
    </recipeUsers>
    <ingredients>
	  		<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
    </ingredients>
		<products>
			<RNGun_DesertEagle>1</RNGun_DesertEagle> <!-- === PRODUCT === -->
		</products>
	 <researchPrerequisite>GasOperation</researchPrerequisite>
	<skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
  </RecipeDef>
  
