<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Royalty</li>
	</mods>
	<match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
		<li Class="PatchOperationAdd">
				<xpath>*/AlienRace.ThingDef_AlienRace[defName="AFerian"]/statBases</xpath><!-- 盔甲 -->
				<value>
		    <PsychicEntropyRecoveryRate>2520</PsychicEntropyRecoveryRate><!-- DLC -->
            <PsychicEntropyMax>8.2</PsychicEntropyMax>
				</value>
			</li>	
		</operations>
	</match>
  </Operation>
  
<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Royalty</li>
	</mods>
	<match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
		<li Class="PatchOperationAdd">
				<xpath>*/AlienRace.ThingDef_AlienRace[defName="AFerian"]/alienRace/thoughtSettings/cannotReceiveThoughts</xpath>
				<value>
					<li>TitleApparelMinQualityNotMet</li><!-- Society dlc -->
					<li>TitleApparelRequirementNotMet</li>
					<li>TitleNoPersonalBedroom</li>
					<li>AteFoodInappropriateForTitle</li>
					<li>TitleBedroomRequirementsNotMet</li>
					<li>TitleThroneroomRequirementsNotMet</li>
				</value>
			</li>	
		</operations>
	</match>
  </Operation>
</Patch>

