<Defs>

  <ThingDef ParentName="AF_BaseArmors_Ferian" Name="AF_BaseArmors_H">
        <defName>AF_Armor_H</defName>
        <label>菲狐-探索者头盔</label>
        <description>可能是永远不会被纳入正式编制的头盔，来自边缘世界挣扎求生的菲狐们。
\n头盔足够的轻便且极其坚固，可以阻挡大部分的恶劣天气，与【菲狐-探索者盔甲】一同使用。</description>
		<thingClass>Apparel</thingClass>

        <graphicData>
            <texPath>Armors/AF_Armor_H</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
        </graphicData>
		
        <statBases>
            <ArmorRating_Sharp>0.48</ArmorRating_Sharp>
            <ArmorRating_Blunt>1.08</ArmorRating_Blunt>
            <ArmorRating_Heat>5.0</ArmorRating_Heat>
            <Insulation_Cold>120</Insulation_Cold>
            <Insulation_Heat>30</Insulation_Heat>
            <EquipDelay>0.6</EquipDelay><!-- Clothes -->
			
            <Mass>0.8</Mass>			

      <Beauty>12</Beauty>
        </statBases>
		
        <tickerType>Normal</tickerType>
		
    <equippedStatOffsets>
      <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
      <MoveSpeed>-0.25</MoveSpeed>
	  <ShootingAccuracyPawn>50</ShootingAccuracyPawn>
		  <ToxicSensitivity>-4.2</ToxicSensitivity>	 
	  
          <SocialImpact>0.1</SocialImpact>
          <NegotiationAbility>0.25</NegotiationAbility>
    </equippedStatOffsets>
	
    <costList>
	  <MedicineUltratech>8</MedicineUltratech>
	  <Uranium>35</Uranium>
    </costList>
	
        <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
	  
            <layers>
        <li>Overhead</li>
            </layers>
			
           <tags>
                <li>Ferian_SG_Armors</li>
            </tags>
			
            <wornGraphicPath>Armors/AF_Armor_H</wornGraphicPath>
        </apparel>

    <thingSetMakerTags>
      <li>Ferian_tag</li>
    </thingSetMakerTags>
    </ThingDef>


    <ThingDef ParentName="AF_BaseArmors_H">
