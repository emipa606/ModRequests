<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>AF_TH_NeedBeauty</defName>
    <workerClass>ThoughtWorker_NeedBeauty</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>Miraculous</li>
    </requiredTraits>
    <stages>
      <li>
        <label>&lt;color=#fbef97&gt;边缘的氛围！&lt;/color&gt;</label>
        <description>这才叫边缘世界嘛！我来啦！！！</description><!-- Hideous -->
        <baseMoodEffect>24</baseMoodEffect>
      </li>
      <li>
        <label>不忍直视的环境</label>
        <description>遍地都是真实的鲜血和尸骸！这太酷酷酷酷酷了！！！</description><!-- VeryUgly -->
        <baseMoodEffect>18</baseMoodEffect>
      </li>
      <li>
        <label>熟悉的感觉</label>
        <description>就像家乡的保护区一样。唔...感觉有点奇怪。</description><!-- Ugly -->
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
	  <!-- Neutral -->
      <li>
        <label>原始生存！</label>
        <description>就和我最开始想象的一样！</description><!-- Pretty -->
        <baseMoodEffect>6</baseMoodEffect>
      </li>
      <li>
        <label>贵族的生活</label>
        <description>这里就像历史书里的城堡一样！我爱死这个地方了！</description><!-- VeryPretty -->
        <baseMoodEffect>12</baseMoodEffect>
      </li>
      <li>
        <label>&lt;color=#fbef97&gt;富丽堂皇？&lt;/color&gt;</label>
        <description>唔...我不喜欢这种感觉...</description><!-- Beautiful -->
        <baseMoodEffect>-24</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
