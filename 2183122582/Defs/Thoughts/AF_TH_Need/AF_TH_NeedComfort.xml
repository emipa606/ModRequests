<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>AF_TH_NeedComfort</defName>
    <workerClass>ThoughtWorker_NeedComfort</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>Miraculous</li>
    </requiredTraits>
    <stages>
      <li>
        <label>&lt;color=#fbef97&gt;不够苏服&lt;/color&gt;</label>
        <description>还好我自己就是毛茸茸~</description><!-- Uncomfortable -->
        <baseMoodEffect>12</baseMoodEffect>
      </li>
	  <!-- Normal -->
      <li>
        <label>边缘，边缘！</label>
        <description>这种危机四伏的地方！我可没有闲工夫坐下来哟！</description><!-- Comfortable -->
        <baseMoodEffect>8</baseMoodEffect>
      </li>
      <li>
        <label>放松自己</label>
        <description>啊~这可是我自己造的小板凳哟~</description><!-- VeryComfortable -->
        <baseMoodEffect>12</baseMoodEffect>
      </li>
      <li>
        <label>极其舒适</label>
        <description>（颓废）</description><!-- ExtremelyComfortable -->
        <baseMoodEffect>8</baseMoodEffect>
      </li>
      <li>
        <label>&lt;color=#fbef97&gt;奢华享受？&lt;/color&gt;</label>
        <description>这感觉就像在云端，但我却一点也高兴不起来...我最开始来这个世界的目的是什么呢？</description><!-- LuxuriantlyComfortable -->
        <baseMoodEffect>-24</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
