<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>AF_TH_NeedFood</defName>
    <workerClass>ThoughtWorker_NeedFood</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>Miraculous</li>
    </requiredTraits>
    <stages>
      <li>
        <label>有点小饿</label>
        <description>我想吃点零食。</description><!-- Fed -->
        <baseMoodEffect>-24</baseMoodEffect>
      </li>
      <li>
        <label>非常饿！</label>
        <description>我想吃肉！肉！！！</description><!-- Hungry -->
        <baseMoodEffect>-42</baseMoodEffect>
      </li>
      <li>
        <label>饥肠辘辘（忍受）</label>
        <description>唔...我应该可以吃一点耳朵上的花...</description><!-- Malnutrition 0% -->
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
      <li>
        <label>饥肠辘辘（难以忍受）</label>
        <description>我从来没有这么饿过...这些叶子可以吃吗...</description><!-- Malnutrition 40%-->
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
      <li>
        <label>快要饿死了</label>
        <description>肚子从未这么疼过，我觉得我快要晕倒了...</description><!-- Malnutrition 60%-->
        <baseMoodEffect>-24</baseMoodEffect>
      </li>
      <li>
        <label>营养不良</label>
        <description>吃的...食物...求求你...</description><!-- Malnutrition 80%-->
        <baseMoodEffect>-42</baseMoodEffect>
      </li>
      <li>
        <label>【&lt;color=#fbef97&gt;无惧死亡&lt;/color&gt;】</label>
        <description>啊哈哈...真不敢相信我会这么死去...
		\n\n我能感觉自己的生命已经走到了尽头，不过放心，我会在飞船上静静等待的。
		\n\n在我死后，我的尸体会为其他生命提供宝贵的营养...真讽刺呢...</description><!-- UrgentlyHungry （Malnutrition 80%+）-->
        <baseMoodEffect>42</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
