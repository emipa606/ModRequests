<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>AF_TH_NeedJoy</defName>
    <workerClass>ThoughtWorker_NeedJoy</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>Miraculous</li>
    </requiredTraits>
    <stages>
      <li>
        <label>&lt;color=#fbef97&gt;为了活下去！&lt;/color&gt;</label>
        <description>我来这个世界是为了什么？让风暴来得更加猛烈些嘎啊啊啊啊！</description><!-- Empty -->
        <baseMoodEffect>42</baseMoodEffect>
      </li>
      <li>
        <label>闷闷不乐</label>
        <description>这个世界没有一点挑战性...</description><!-- VeryLow -->
        <baseMoodEffect>-24</baseMoodEffect>
      </li>
      <li>
        <label>有点无聊了</label>
        <description>我想和朋友们玩一会...</description><!-- Low -->
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
      <li>
        <label>原始的快乐</label>
        <description>下一局！下一局！我一定能赢的！</description><!-- Satisfied -->
        <baseMoodEffect>4</baseMoodEffect>
      </li>
      <li>
        <label>&lt;color=#fbef97&gt;我的朋友&lt;/color&gt;</label>
        <description>我爱你们！！！</description><!-- High -->
        <baseMoodEffect>8</baseMoodEffect>
      </li>
	  <!-- Extreme -->
    </stages>
  </ThoughtDef>

</Defs>
