        <li>Shell</li>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Neolithic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>30</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
        <li>
          <weight>2</weight>
          <min>(0.5,0.5,0.5)</min>
          <max>(1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
	<equippedStatOffsets>
      <MoveSpeed>-3</MoveSpeed>
      <MeleeHitChance>10</MeleeHitChance>
      <MeleeDodgeChance>-20</MeleeDodgeChance>
      <IncomingDamageFactor>-0.3</IncomingDamageFactor>
	  <ShootingAccuracyPawn>-10</ShootingAccuracyPawn>
