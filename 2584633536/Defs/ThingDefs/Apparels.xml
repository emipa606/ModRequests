<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>GJ_Heavyarmour</defName>
    <description>一件重型大衣，使用了大量的材料，很重，很硬，很慢，散热还不好</description>
    <label>重型大衣</label>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Heavyarmour/GJ_Heavyarmour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.05</drawSize>
    </graphicData>
    <costStuffCount>250</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToMake>13000</WorkToMake>
      <Mass>5</Mass>
      <StuffEffectMultiplierArmor>0.65</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
      <Insulation_Heat>-7</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.25</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Heavyarmour/GJ_Heavyarmour</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>30</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
        <li>
          <weight>2</weight>
          <min>(0.5,0.5,0.5)</min>
          <max>(1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
	<equippedStatOffsets>
      <MoveSpeed>-1</MoveSpeed>
    </equippedStatOffsets>
  </ThingDef>
