<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- general -->

  <PawnKindDef ParentName="GorKind">
    <defName>Gorebull</defName>
    <label>gorebull</label>
    <race>Alien_Bullgor</race>
    <factionLeader>true</factionLeader>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>Gorebull</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
    <combatPower>180</combatPower>
    <minGenerationAge>20</minGenerationAge>
    <maxGenerationAge>90</maxGenerationAge>
    <defaultFactionType>GorFaction</defaultFactionType>
    <apparelAllowHeadgearChance>0.5</apparelAllowHeadgearChance>
    <apparelTags>
      <li>Bullgor</li>
    </apparelTags>
    <gearHealthRange>
      <min>1.0</min>
      <max>3.0</max>
    </gearHealthRange>
    <apparelMoney>
      <min>420</min>
      <max>600</max>
    </apparelMoney>
    <weaponTags>
      <li>Minotaur</li>
    </weaponTags>
    <weaponMoney>
      <min>300</min>
      <max>600</max>
    </weaponMoney>
    <inventoryOptions>
      <skipChance>0.2</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>100</min>
            <max>250</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
    <initialWillRange>3~5</initialWillRange>
    <initialResistanceRange>38~58</initialResistanceRange>
  </PawnKindDef>

  <!-- Soldiers -->

  <PawnKindDef ParentName="GorKind">
    <defName>Minotaur</defName>
    <label>minotaur</label>
    <race>Alien_Bullgor</race>
    <factionLeader>false</factionLeader>
    <combatPower>140</combatPower>
    <minGenerationAge>18</minGenerationAge>
    <maxGenerationAge>60</maxGenerationAge>
    <defaultFactionType>GorFaction</defaultFactionType>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>Bullgor</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
    <apparelTags>
      <li>GorLow</li>
    </apparelTags>
    <gearHealthRange>
      <min>0.5</min>
      <max>2.0</max>
    </gearHealthRange>
    <apparelMoney>
      <min>200</min>
      <max>300</max>
    </apparelMoney>
    <weaponTags>
      <li>Minotaur</li>
    </weaponTags>
    <weaponMoney>
      <min>300</min>
      <max>500</max>
    </weaponMoney>
    <inventoryOptions>
      <skipChance>0.2</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>20</min>
            <max>100</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
    <initialWillRange>2~4</initialWillRange>
    <initialResistanceRange>13~20</initialResistanceRange>
  </PawnKindDef>

  <!-- Player -->
  
  <PawnKindDef Name="BullgorBase" Abstract="True">
    <defName>BullgorFaction</defName>
    <label>bullgor</label>
    <combatPower>50</combatPower>
    <baseRecruitDifficulty>0.60</baseRecruitDifficulty>
    <isFighter>true</isFighter>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <forceNormalGearQuality>true</forceNormalGearQuality>
    <race>Alien_Bullgor</race>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
  </PawnKindDef>

