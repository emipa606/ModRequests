<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="SculptureBase">
    <defName>GorStone</defName>
    <label>runestone</label>
    <description>A small runestone.</description>
    <castEdgeShadows>false</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Rune</texPath>
      <drawSize>(1.5,1.5)</drawSize>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <building>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Beauty>10</Beauty>
      <WorkToMake>8000</WorkToMake>
      <Mass>5</Mass>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
  </ThingDef>

  <ThingDef ParentName="SculptureBase">
    <defName>GorStoneM</defName>
    <label>large runestone</label>
    <description>A large runestone.</description>
    <castEdgeShadows>false</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/MediumRune</texPath>
      <drawSize>(2.5,2.5)</drawSize>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <building>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Beauty>50</Beauty>
      <WorkToMake>15000</WorkToMake>
      <Mass>10</Mass>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
  </ThingDef>

</Defs>
