<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef Name="BaseGrenadeProjectileCygor" Abstract="True">
    <category>Projectile</category>
    <altitudeLayer>Projectile</altitudeLayer>
    <thingClass>Projectile_Explosive</thingClass>
    <label>projectile</label>
    <tickerType>Normal</tickerType>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
    <graphicData>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <projectile>
      <speed>25</speed>
      <flyOverhead>true</flyOverhead>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseGrenadeProjectileCygor">
  <defName>Proj_CygorRock</defName>
  <label>boulder</label>
  <graphicData>
    <texPath>Things/Item/Equipment/Hidden/CygorRock</texPath>
    <graphicClass>Graphic_Single</graphicClass>
  </graphicData>
  <projectile>
    <explosionRadius >2.2</explosionRadius >
    <damageDef>CygorBomb</damageDef>
    <explosionDelay>0</explosionDelay>
    <preExplosionSpawnThingDef>Filth_RubbleRock</preExplosionSpawnThingDef>
  </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseGunWithQuality">
    <defName>Weapon_CygorRock</defName>
    <label>boulder</label>
    <description>Huge boulder.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Hidden/CygorRock</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>100</MarketValue>
      <Mass>20</Mass>
      <AccuracyTouch>0.9</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.7</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>8</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <weaponTags>
      <li>CygorRock</li>
    </weaponTags>
    <verbs>
      <li>
        <label>throw boulder</label>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>5</warmupTime>
        <range>62.9</range>
        <forcedMissRadius>10</forcedMissRadius>
        <requireLineOfSight>false</requireLineOfSight>
        <noiseRadius>8</noiseRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <soundCast>Interact_BeatFire</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>Proj_CygorRock</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <tools>
      <li>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>31</power>
        <cooldownTime>3</cooldownTime>
      </li>
    </tools>
    <specialDisplayRadius>62.9</specialDisplayRadius>
  </ThingDef>
  
</Defs>