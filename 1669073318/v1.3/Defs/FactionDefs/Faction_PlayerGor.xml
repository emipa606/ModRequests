<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <FactionDef>
		<defName>GorPlayerFaction</defName>
		<label>herd outcast</label>
    <description>A bestigor that lost a duel. Cast out of the herd, now a outcast that has to build their own herd.</description>
    <isPlayer>true</isPlayer>
    <pawnSingular>outcast</pawnSingular>
    <pawnsPlural>outcasts</pawnsPlural>
    <backstoryFilters>
      <li>
        <categories>
          <li>Bestigor</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>Things/World/GorIconSecond</factionIconPath>
    <settlementTexturePath>World/WorldObjects/Expanding/Town</settlementTexturePath>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <techLevel>Neolithic</techLevel>
    <allowedCultures><li>KTBeastmenCulture</li></allowedCultures>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Structure_TheistAbstract</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">KTBeastmenChaosMeme</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">MaleSupremacy</li>
    </requiredMemes>
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">FleshPurity</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Tunneler</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Guilty</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">HumanPrimacy</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Animist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Structure_TheistEmbodied</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Archist</li>
    </disallowedMemes>
    <structureMemeWeights>
      <Structure_TheistEmbodied MayRequire="Ludeon.RimWorld.Ideology">0</Structure_TheistEmbodied>
      <Structure_TheistAbstract MayRequire="Ludeon.RimWorld.Ideology">2</Structure_TheistAbstract>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">0</Structure_Ideological>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">0</Structure_Archist>
      <Structure_OriginChristian MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginChristian>
      <Structure_OriginIslamic MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginIslamic>
      <Structure_OriginHindu MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginHindu>
      <Structure_OriginBuddhist MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginBuddhist>
    </structureMemeWeights>
    <factionNameMaker>NamerGorBase</factionNameMaker>
    <settlementNameMaker>NamerGorBase</settlementNameMaker>
    <basicMemberKind>GorScenarioBestigor</basicMemberKind>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
        <li>Steel</li>
      </thingDefs>
    </apparelStuffFilter>
    <recipePrerequisiteTags>
      <li>Tribal</li>
    </recipePrerequisiteTags>
    <raidLootMaker>TribeRaidLootMaker</raidLootMaker>
    <raidLootValueFromPointsCurve>
      <points>
        <li>(35,     15)</li>
        <li>(100,   120)</li>
        <li>(1000,  500)</li>
        <li>(2000,  800)</li>
        <li>(4000, 1000)</li>
      </points>
    </raidLootValueFromPointsCurve>
  </FactionDef>

  <FactionDef>
    <defName>BeastmenPlayerFaction</defName>
    <label>beastmen colony</label>
    <description>A colony built by beastmen.</description>
    <isPlayer>true</isPlayer>
    <pawnSingular>outcast</pawnSingular>
    <pawnsPlural>outcasts</pawnsPlural>
    <backstoryFilters>
      <li>
        <categories>
          <li>Gor</li>
          <li>Ungor</li>
          <li>Bullgor</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>Things/World/GorIconSecond</factionIconPath>
    <settlementTexturePath>World/WorldObjects/Expanding/Town</settlementTexturePath>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <techLevel>Neolithic</techLevel>
    <factionNameMaker>NamerGorBase</factionNameMaker>
    <settlementNameMaker>NamerGorBase</settlementNameMaker>
    <basicMemberKind>UngorBeastmenPlayer</basicMemberKind>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
        <li>Steel</li>
      </thingDefs>
    </apparelStuffFilter>
    <recipePrerequisiteTags>
      <li>Tribal</li>
    </recipePrerequisiteTags>
    <raidLootMaker>TribeRaidLootMaker</raidLootMaker>
    <raidLootValueFromPointsCurve>
      <points>
        <li>(35,     15)</li>
        <li>(100,   120)</li>
        <li>(1000,  500)</li>
        <li>(2000,  800)</li>
        <li>(4000, 1000)</li>
      </points>
    </raidLootValueFromPointsCurve>
  </FactionDef>

</Defs>