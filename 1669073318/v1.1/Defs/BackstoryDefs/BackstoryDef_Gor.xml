  <!-- Adulthood -->

  <AlienRace.BackstoryDef>
    <defName>Bestigor</defName>
    <title>big horned</title>
    <titleShort>horned</titleShort>
    <baseDescription>[PAWN_nameDef] horns show that [PAWN_nameDef] belongs to the stronger ones. Larger horns are carried with pride, proof that you are blessed with strength and stand above the lesser kind.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <forcedHediffs>
      <li>BestigorHornLeft</li>
      <li>BestigorHornRight</li>
    </forcedHediffs>

    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>5</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Animals</defName>
        <amount>5</amount>
      </li>
    </skillGains>
    <spawnCategories>
      <li>Bestigor</li>
    </spawnCategories>
    <forcedTraits>
      <li>
        <defName>Bloodlust</defName>
        <chance>50</chance>
        <commonalityMale>100</commonalityMale>
        <commonalityFemale>10</commonalityFemale>
      </li>
      <li>
        <defName>Tough</defName>
        <chance>20</chance>
      </li>
    </forcedTraits>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

