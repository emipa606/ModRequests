<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Gor -->
  
  <!-- Adulthood -->

  <AlienRace.BackstoryDef>
    <defName>Gorebull</defName>
    <title>big horned</title>
    <titleShort>horned</titleShort>
    <baseDescription>[PAWN_nameDef] horns show that [PAWN_nameDef] belongs to the stronger ones. Larger horns are carried with pride, proof that you are blessed with strength and stand above the lesser kind.</baseDescription>
    <bodyTypeMale>Hulk</bodyTypeMale>
    <bodyTypeFemale>Hulk</bodyTypeFemale>
    <forcedHediffs>
      <li>GorebullHornLeft</li>
      <li>GorebullHornRight</li>
    </forcedHediffs>

    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>5</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Animals</defName>
        <amount>5</amount>
      </li>
    </skillGains>
    <spawnCategories>
      <li>Gorebull</li>
    </spawnCategories>
    <forcedTraits>
      <li>
        <defName>Bloodlust</defName>
        <chance>50</chance>
        <commonalityMale>100</commonalityMale>
        <commonalityFemale>10</commonalityFemale>
      </li>
      <li>
        <defName>Tough</defName>
        <chance>20</chance>
      </li>
    </forcedTraits>
    <workDisables>
      <li>Intellectual</li>
      <li>Cooking</li>
    </workDisables>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>BullgorRaider</defName>
    <title>raider</title>
    <titleShort>raider</titleShort>
    <baseDescription>[PAWN_nameDef] lives for violence. The only thing that brins joy to [PAWN_nameDef] is the bloodshed of humanity.</baseDescription>
    <bodyTypeMale>Hulk</bodyTypeMale>
    <bodyTypeFemale>Hulk</bodyTypeFemale>

    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <spawnCategories>
      <li>Bullgor</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
    <workDisables>
      <li>Intellectual</li>
    </workDisables>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>BullgorGrunt</defName>
    <title>grunt</title>
    <titleShort>grunt</titleShort>
    <baseDescription>[PAWN_nameDef] is average rough and vile Gor.</baseDescription>

    <bodyTypeMale>Hulk</bodyTypeMale>
    <bodyTypeFemale>Hulk</bodyTypeFemale>

    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <spawnCategories>
      <li>Bullgor</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
    <workDisables>
      <li>Intellectual</li>
    </workDisables>
  </AlienRace.BackstoryDef>

  <!-- Childhood -->

  <AlienRace.BackstoryDef>
    <defName>BullgorWild</defName>
    <title>wildling</title>
    <titleShort>wild</titleShort>
    <baseDescription>[PAWN_nameDef] was born as a bullgor to a human family. Left in the wilds like so many other mutant children. Picked up by a nearby gor herd that heard the mutant child calling.</baseDescription>

    <bodyTypeMale>Hulk</bodyTypeMale>
    <bodyTypeFemale>Hulk</bodyTypeFemale>

    <slot>Childhood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>Intellectual</li>
    </workDisables>
    <spawnCategories>
      <li>Bullgor</li>
      <li>Gorebull</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>BullgorChild</defName>
    <title>herd born</title>
    <titleShort>herd</titleShort>
    <baseDescription>[PAWN_nameDef] was born as a bullgor. The only life [PAWN_nameDef] know of is the herd.</baseDescription>

    <bodyTypeMale>Hulk</bodyTypeMale>
    <bodyTypeFemale>Hulk</bodyTypeFemale>

    <slot>Childhood</slot>
    <skillGains>
      <li>
        <defName>Shooting</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Melee</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Crafting</defName>
        <amount>1</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>Intellectual</li>
    </workDisables>
    <spawnCategories>
      <li>Bullgor</li>
      <li>Gorebull</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>BullgorStrange</defName>
    <title>strange bullgor</title>
    <titleShort>strange</titleShort>
    <baseDescription>[PAWN_nameDef] was born as a mutant. Abandoned like so many other mutants [PAWN_nameDef] was left to fend for itself in a passing gor herd. [PAWN_nameDef] was a stranger than the rest of the mutant children, a mind touched by chaos throwing [PAWN_nameDef] into mania from time to time.</baseDescription>

    <bodyTypeMale>Hulk</bodyTypeMale>
    <bodyTypeFemale>Hulk</bodyTypeFemale>

    <slot>Childhood</slot>
    <skillGains>
      <li>
        <defName>Artistic</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <forcedTraits>
      <li>
        <defName>Bloodlust</defName>
        <chance>25</chance>
      </li>
      <li>
        <defName>Psychopath</defName>
        <chance>10</chance>
      </li>
      <li>
        <defName>Nerves</defName>
        <degree>-2</degree>
        <chance>100</chance>
      </li>
    </forcedTraits>
    <workDisables>
      <li>Caring</li>
      <li>Intellectual</li>
    </workDisables>
    <spawnCategories>
      <li>Bullgor</li>
      <li>Gorebull</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
      <li>Artistic</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

</Defs>