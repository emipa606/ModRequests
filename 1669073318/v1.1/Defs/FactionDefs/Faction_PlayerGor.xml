<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <FactionDef>
		<defName>GorPlayerFaction</defName>
		<label>herd outcast</label>
    <description>A bestigor that lost a duel. Cast out of the herd, now a outcast that has to build their own herd.</description>
    <isPlayer>true</isPlayer>
    <pawnSingular>outcast</pawnSingular>
    <pawnsPlural>outcasts</pawnsPlural>
    <backstoryFilters>
      <li>
        <categories>
          <li>Bestigor</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>Things/World/GorIconSecond</factionIconPath>
    <settlementTexturePath>World/WorldObjects/Expanding/Town</settlementTexturePath>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <techLevel>Neolithic</techLevel>
    <factionNameMaker>NamerGorBase</factionNameMaker>
    <settlementNameMaker>NamerGorBase</settlementNameMaker>
    <basicMemberKind>GorScenarioBestigor</basicMemberKind>
    <hairTags>
      <li>Punk</li>
      <li>Tribal</li>
      <li>Rural</li>
    </hairTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
        <li>Steel</li>
      </thingDefs>
    </apparelStuffFilter>
    <recipePrerequisiteTags>
      <li>Tribal</li>
    </recipePrerequisiteTags>
  </FactionDef>

  <FactionDef>
    <defName>BeastmenPlayerFaction</defName>
    <label>beastmen colony</label>
    <description>A colony built by beastmen.</description>
    <isPlayer>true</isPlayer>
    <pawnSingular>outcast</pawnSingular>
    <pawnsPlural>outcasts</pawnsPlural>
    <backstoryFilters>
      <li>
        <categories>
          <li>Gor</li>
          <li>Ungor</li>
          <li>Bullgor</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>Things/World/GorIconSecond</factionIconPath>
    <settlementTexturePath>World/WorldObjects/Expanding/Town</settlementTexturePath>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <techLevel>Neolithic</techLevel>
    <factionNameMaker>NamerGorBase</factionNameMaker>
    <settlementNameMaker>NamerGorBase</settlementNameMaker>
    <basicMemberKind>UngorBeastmenPlayer</basicMemberKind>
    <hairTags>
      <li>Punk</li>
      <li>Tribal</li>
      <li>Rural</li>
    </hairTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
        <li>Steel</li>
      </thingDefs>
    </apparelStuffFilter>
    <recipePrerequisiteTags>
      <li>Tribal</li>
    </recipePrerequisiteTags>
  </FactionDef>

</Defs>