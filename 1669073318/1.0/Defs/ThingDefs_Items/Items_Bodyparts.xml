    <description>The broken horn of a gor.</description>
    <statBases>
      <Mass>0.4</Mass>
      <MarketValue>40</MarketValue>
    </statBases>
    <techHediffsTags>
      <li>GorDamaged</li>
    </techHediffsTags>
  </ThingDef>

  <ThingDef ParentName="BeastmenBodyPartNaturalBase">
    <defName>GorRuntHorn</defName>
