  <ThingDef Name="GorBodyPartProstheticBase" ParentName="BodyPartBase" Abstract="True">
    <graphicData>
      <texPath>Things/Item/Health/HealthItemProsthetic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <thingCategories>
      <li>BodyPartsBeastmen</li>
    </thingCategories>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="GorBodyPartProstheticBase">
    <defName>GorSteelHoof</defName>
    <label>steel hoof</label>
    <description>A hoof made out of steel.</description>
    <techLevel>Industrial</techLevel>
    <costList>
      <Steel>30</Steel>
    </costList>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>5</Mass>
    </statBases>
    <techHediffsTags>
      <li>Gor</li>
    </techHediffsTags>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
      <researchPrerequisite>Smithing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
</Defs>