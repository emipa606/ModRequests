  <!-- Leader -->

  <PawnKindDef ParentName="GorKind">
    <defName>Beastlord</defName>
    <label>beastlord</label>
    <race>Alien_Gor</race>
    <factionLeader>true</factionLeader>
    <combatPower>150</combatPower>
    <defaultFactionType>GorFaction</defaultFactionType>
    <backstoryCategories>
      <li>Bestigor</li>
    </backstoryCategories>
    <minGenerationAge>40</minGenerationAge>
    <maxGenerationAge>90</maxGenerationAge>
    <apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
    <apparelTags>
      <li>GorHigh</li>
    </apparelTags>
    <gearHealthRange>
      <min>1.0</min>
      <max>3.0</max>
    </gearHealthRange>
    <apparelMoney>
      <min>400</min>
      <max>3500</max>
    </apparelMoney>
    <weaponTags>
      <li>GorHigh</li>
    </weaponTags>
    <weaponMoney>
      <min>500</min>
      <max>1400</max>
    </weaponMoney>
    <inventoryOptions>
      <skipChance>0.2</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>300</min>
            <max>400</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>

