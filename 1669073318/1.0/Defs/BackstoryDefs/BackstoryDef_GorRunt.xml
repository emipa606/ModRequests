<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Extra Horn Variant for Gor -->
  
  <!-- Adulthood -->

  <AlienRace.BackstoryDef>
    <defName>GorTurnedRunt</defName>
    <title>mutant</title>
    <titleShort>turned</titleShort>
    <baseDescription>[PAWN_nameDef] was turned by chaos.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>3</amount>
      </li>
    </skillGains>
    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
    <forcedTraits>
      <li>
        <defName>Bloodlust</defName>
        <chance>25</chance>
        <commonalityMale>100</commonalityMale>
        <commonalityFemale>10</commonalityFemale>
      </li>
      <li>
        <defName>Psychopath</defName>
        <chance>5</chance>
      </li>
    </forcedTraits>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
    <linkedBackstory>GorChildRunt</linkedBackstory>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>GorRaiderRunt</defName>
    <title>raider</title>
    <titleShort>raider</titleShort>
    <baseDescription>[PAWN_nameDef] horn growth was hampered, leaving them in a state constant shame.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>GorThrallRunt</defName>
    <title>thrall</title>
    <titleShort>thrall</titleShort>
    <baseDescription>[PAWN_nameDef] performs menial task for the herd.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Construction</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Mining</defName>
        <amount>1</amount>
      </li>
    </skillGains>
    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <!-- Childhood -->

  <AlienRace.BackstoryDef>
    <defName>GorWildRunt</defName>
    <title>wildling</title>
    <titleShort>wild</titleShort>
    <baseDescription>[PAWN_nameDef] was born as a gor to a human family. Left in the wilds like so many other mutant children. Picked up by a nearby gor herd that heard the mutant child calling.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Childhood</slot>
    <forcedHediffs>
      <li>GorRuntHornLeft</li>
      <li>GorRuntHornRight</li>
    </forcedHediffs>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>Artistic</li>
      <li>Intellectual</li>
    </workDisables>
    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>GorChildRunt</defName>
    <title>born in herd</title>
    <titleShort>herd</titleShort>
    <baseDescription>[PAWN_nameDef] was born as a gor. The only life [PAWN_nameDef] know of is the herd.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Childhood</slot>
    <forcedHediffs>
      <li>GorRuntHornLeft</li>
      <li>GorRuntHornRight</li>
    </forcedHediffs>
    <skillGains>
      <li>
        <defName>Shooting</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Melee</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Crafting</defName>
        <amount>1</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>Artistic</li>
      <li>Intellectual</li>
    </workDisables>
    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>GorStrangeRunt</defName>
    <title>strange gor</title>
    <titleShort>strange</titleShort>
    <baseDescription>[PAWN_nameDef] was born as a mutant. Abandoned like so many other mutants [PAWN_nameDef] was left to fend for itself in a passing gor herd. [PAWN_nameDef] was a stranger than the rest of the mutant children, a mind touched by chaos throwing [PAWN_nameDef] into mania from time to time.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Childhood</slot>
    <forcedHediffs>
      <li>GorRuntHornLeft</li>
      <li>GorRuntHornRight</li>
    </forcedHediffs>
    <skillGains>
      <li>
        <defName>Artistic</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <forcedTraits>
      <li>
        <defName>Bloodlust</defName>
        <chance>25</chance>
      </li>
      <li>
        <defName>Psychopath</defName>
        <chance>25</chance>
      </li>
      <li>
        <defName>Nerves</defName>
        <degree>-2</degree>
        <chance>100</chance>
      </li>
    </forcedTraits>
    <workDisables>
      <li>Caring</li>
    </workDisables>
    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
      <li>Artistic</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>GorChildRunt</defName>
    <title>farm child</title>
    <titleShort>farmer</titleShort>
    <baseDescription>[PAWN_nameDef] wasn't born as a mutant. [PAWN_nameDef] lived life as a farmers child.  [PAWN_nameDef] was later in life corrupted by chaos, joining a passing gor herd.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Childhood</slot>
    <forcedHediffs>
      <li>GorRuntHornLeft</li>
      <li>GorRuntHornRight</li>
    </forcedHediffs>
    <skillGains>
      <li>
        <defName>Crafting</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Plants</defName>
        <amount>1</amount>
      </li>
    </skillGains>
    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>PlantWork</li>
      <li>Crafting</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

</Defs>