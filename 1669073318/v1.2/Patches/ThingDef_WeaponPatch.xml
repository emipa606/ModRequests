<?xml version="1.0" encoding="utf-8" ?>

<!-- JecsTools OversizedWeapons -->

<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>JecsTools</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>*/ThingDef[defName="MeleeWeapon_BigAxe"]/comps</xpath>
          <value>
            <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon"/>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>*/ThingDef[defName="MeleeWeapon_MassiveAxe"]/comps</xpath>
          <value>
            <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon"/>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>*/ThingDef[defName="MeleeWeapon_MassiveClub"]/comps</xpath>
          <value>
            <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon"/>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
