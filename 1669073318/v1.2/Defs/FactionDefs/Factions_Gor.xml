<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <FactionDef>
		<defName>GorFaction</defName>
		<label>gor herd</label>
    <description>Gathering of destructive gors. A vile herd of beastmen that roams and raids the lands.</description>
    <pawnSingular>beastman</pawnSingular>
    <pawnsPlural>beastmen</pawnsPlural>
    <backstoryFilters>
      <li>
        <categories>
          <li>Gor</li>
          <li>Ungor</li>
          <li>Bullgor</li>
          <li>Gorebull</li>
          <li>Bestigor</li>
        </categories>
      </li>
    </backstoryFilters>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <colorSpectrum>
      <li>(0.45, 0.05, 0.05)</li>
      <li>(0.80, 0.25, 0.05)</li>
    </colorSpectrum>
    <factionIconPath>Things/World/GorIcon</factionIconPath>
    <settlementTexturePath>World/WorldObjects/Expanding/VillageSavage</settlementTexturePath>
	  <leaderTitle>Beastlord</leaderTitle>
    <techLevel>Neolithic</techLevel>
    <permanentEnemy>true</permanentEnemy>
    <fixedName>Cloven Ones</fixedName>
    <settlementNameMaker>NamerGorBase</settlementNameMaker>
    <earliestRaidDays>1</earliestRaidDays>
    <hairTags>
      <li>Punk</li>
      <li>Tribal</li>
    </hairTags>
<allowedArrivalTemperatureRange>-45~45</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>

  <pawnGroupMakers>
    <li>
      <kindDef>Settlement</kindDef>
      <options>
        <Ravager>10</Ravager>
        <Ruffian>7</Ruffian>
        <Raider>7</Raider>
        <Bestigor>4</Bestigor>
        <Minotaur>6</Minotaur>
        <Wargor>3</Wargor>
        <Beastlord>2</Beastlord>
        <Gorebull>2</Gorebull>
      </options>
    </li>
    <li>
      <!-- Normal fights, ranged with melee mix-ins -->
      <kindDef>Combat</kindDef>
      <commonality>100</commonality>
      <disallowedStrategies>
        <li>Siege</li>
      </disallowedStrategies>
      <options>
        <Ravager>50</Ravager>
        <Ruffian>40</Ruffian>
        <Raider>50</Raider>
        <Bestigor>5</Bestigor>
        <Minotaur>7</Minotaur>
        <Wargor>2</Wargor>
        <Beastlord>1</Beastlord>
        <Gorebull>1</Gorebull>
        <ClovenCygorFaction>0.1</ClovenCygorFaction>
      </options>
    </li>
    <li>
      <!-- Normal fights, melee-only -->
      <kindDef>Combat</kindDef>
      <commonality>30</commonality>
      <disallowedStrategies>
        <li>Siege</li>
      </disallowedStrategies>
      <options>
        <Ravager>50</Ravager>
        <Ruffian>40</Ruffian>
        <Raider>50</Raider>
        <Bestigor>5</Bestigor>
        <Minotaur>7</Minotaur>
        <Wargor>5</Wargor>
        <Beastlord>2</Beastlord>
        <Gorebull>2</Gorebull>
        <ClovenCygorFaction>0.1</ClovenCygorFaction>
      </options>
    </li>
  <li>
      <!-- Normal fights, ranged only -->
      <kindDef>Combat</kindDef>
      <commonality>20</commonality>
      <disallowedStrategies>
        <li>Siege</li>
      </disallowedStrategies>
      <options>
        <Raider>90</Raider>
        <ClovenCygorFaction>0.1</ClovenCygorFaction>
      </options>
    </li>

    <li>
      <!-- Normal fights, minotaur only -->
      <kindDef>Combat</kindDef>
      <commonality>10</commonality>
      <disallowedStrategies>
        <li>Siege</li>
      </disallowedStrategies>
      <options>
        <Minotaur>90</Minotaur>
        <Gorebull>10</Gorebull>
        <ClovenCygorFaction>0.1</ClovenCygorFaction>
      </options>
    </li>
  </pawnGroupMakers>
  </FactionDef>

</Defs>