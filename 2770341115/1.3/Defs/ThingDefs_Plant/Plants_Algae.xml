<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="PlantBase">
		<defName>AC_AlgaeCrop</defName>
		<label>algae</label>
		<description>A fast growing genetically modified species of algae that is capable of growing in freshwater.\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; Algae is able to be grown in aquatic growing zones, which ignore fertility or in hydroponics. Algae is the easiest to sow and harvest of the aquatic crops and is less offensive if eaten raw. However, it has a lower yield than other aquatic crops.</description>
		<graphicData>
			<texPath>Crop/AlgaeMature</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.08</Nutrition>
		</statBases>
		<selectable>true</selectable>
		<pathCost>14</pathCost>
		<plant>
		    <immatureGraphicPath>Crop/AlgaeImmature</immatureGraphicPath>
			<fertilitySensitivity>0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>AC_RawAlgae</harvestedThingDef>
			<harvestYield>5</harvestYield>
			<fertilityMin>0</fertilityMin>
			<blockAdjacentSow>false</blockAdjacentSow>
			<sowWork>600</sowWork>
			<harvestWork>700</harvestWork>
			<sowTags>
				<li>VCE_Aquatic</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>3.5</growDays>
			<visualSizeRange>0.3~0.8</visualSizeRange>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
			<humanFoodPlant>true</humanFoodPlant>
		</plant>
	</ThingDef>
</Defs>
