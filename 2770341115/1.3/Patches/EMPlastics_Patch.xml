<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Expanded Materials - Plastics</li>
    </mods>	
	<match Class="PatchOperationSequence">
      <operations>	  	
		<li Class="PatchOperationReplace">
         <xpath>/Defs/RecipeDef[defName = "VMEu_MakeChemfuelFromDarkOil"]/products/Chemfuel</xpath>
         <value>
            <Chemfuel>50</Chemfuel>
         </value>		 
        </li>
        <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "Neutroamine"]/statBases/MarketValue</xpath>
            <value>
                <MarketValue>0.15</MarketValue>
            </value>
        </li>
	  </operations>	  
    </match>		  
  </Operation>
</Patch>