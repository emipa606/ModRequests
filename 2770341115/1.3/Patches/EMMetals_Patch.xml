<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Expanded Materials - Metals</li>
    </mods>	
	<match Class="PatchOperationSequence">
	  <success>Always</success>
      <operations>	  
		<li Class="PatchOperationReplace">	
         <xpath>/Defs/RecipeDef[defName="VMEu_MakeChemfuelFromFossil"]/description</xpath>
         <value>
            <description>A somewhat long process that extracts a decent amount of chemfuel from dark oil.</description>
		 </value>
		</li>  		
		<li Class="PatchOperationReplace">
         <xpath>/Defs/RecipeDef[defName = "VMEu_MakeChemfuelFromFossil"]/products/Chemfuel</xpath>
         <value>
            <Chemfuel>50</Chemfuel>
         </value>		 
        </li>	  
	  </operations>	  
    </match>		  
  </Operation>
</Patch>