<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_HellfireBattlearmor</defName>
    <label>hellfire battlearmor</label>
    <description>Advanced glitterworld battlearmor capable of absorbing tremendous punishment. Usually worn by hardened veterans and ex-convicts on urbworld frontlines.\n\nComes with an integrated forcefield and exoskeleton which provide additional defense and agility.</description>
    <thingClass>HellfireBattleArmor</thingClass>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Hellfire</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToMake>120000</WorkToMake>
      <MaxHitPoints>600</MaxHitPoints>
      <MarketValue>4000</MarketValue>
      <Mass>15</Mass>
      <Flammability>0.2</Flammability>
      <EnergyShieldRechargeRate>0.1</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>0.8</EnergyShieldEnergyMax>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.1</ArmorRating_Sharp>
      <ArmorRating_Heat>0.60</ArmorRating_Heat>
      <Insulation_Cold>36</Insulation_Cold>
      <Insulation_Heat>12</Insulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <WorkSpeedGlobal>-0.40</WorkSpeedGlobal>
      <MoveSpeed>-0.2</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    <costList>
    <Plasteel>120</Plasteel>
      <Uranium>50</Uranium>
      <ComponentSpacer>8</ComponentSpacer>
    </costList>
    <generateCommonality>1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Hands</li>
        <li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Hellfire</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
        <li>BeltDefense</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="ArmorHelmetMakeableBase">
