		<success>Normal</success>
		<xpath>Defs/ThingDef[defName="TrapSpike"]</xpath>
		<value>
			<li Class="RimDungeon.Trap_Def">
				<numberOfAttacks>2</numberOfAttacks>
				<rearmable>true</rearmable>
				<armorPenetration>0.5</armorPenetration>
