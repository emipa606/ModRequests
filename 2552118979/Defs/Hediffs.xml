<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>KO</defName>
    <label>KO'd</label>
    <labelNoun>KO'd</labelNoun>
    <description>This pawn was struck by such psychic energy that they are unable to move</description>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <minSeverity>.5</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>.1</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>.75</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>.01</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-4</severityPerDay>
        <showDaysToRecover>true</showDaysToRecover>
      </li>
    </comps>
  </HediffDef>
</Defs>