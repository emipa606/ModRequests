<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="LTS_Apparel_BasePowerShield" ParentName="BaseMeleeWeapon_Blunt_Quality" Abstract="True">
		<techLevel>Spacer</techLevel>
		<thingClass>VFECore.Apparel_Shield</thingClass>
		<apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<careIfDamaged>false</careIfDamaged>
			<wearPerDay>0</wearPerDay>
			<bodyPartGroups>
				<li>LeftHand</li>
				<li>Arms</li>
			</bodyPartGroups>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<layers>
				<li>VFEC_OuterShell</li>
			</layers>
		</apparel>
		<thingCategories Inherit="False">
			<li>VFEC_Shields</li>
		</thingCategories>
		
		
		<equippedAngleOffset>0</equippedAngleOffset>
		<tools>
			<li>
				<label>centre</label>
				<labelUsedInLogging>false</labelUsedInLogging>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>
	<ThingDef ParentName="LTS_Apparel_BasePowerShield">
		<defName>LTS_Apparel_Shield_Power</defName>
		<label>power pavise</label>
		<description>A spacer heavy shield made out of layered plasteel-weave plates with solid ablative coatings. More a portable wall than a shield, it provides maximum protection at the cost of heavy encumbrance.\n\nThis type of shield is commonly used by advanced police forces and space marine pointmen.</description>
		<graphicData>
			<texPath>Things/Apparel/PowerShield/PowerShield</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>PoweredArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
			  <li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
		  <ComponentSpacer>4</ComponentSpacer>
		  <Plasteel>200</Plasteel>
		  <Uranium>10</Uranium>
		</costList>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<Flammability>0.1</Flammability>
			<ArmorRating_Sharp>1.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.6</ArmorRating_Heat>
			<WorkToMake>60000</WorkToMake>
			<Mass>12</Mass>
		</statBases>
		<equippedStatOffsets>
		  <MoveSpeed>-0.4</MoveSpeed>
		  <ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
		  <MeleeHitChance>-2</MeleeHitChance>
		  <MeleeDodgeChance>-5</MeleeDodgeChance>
		</equippedStatOffsets>
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <weight>10</weight>
			  <only>(0.9,0.9,0.9)</only>
			</li>
			<li>
			  <weight>10</weight>
			  <only>(0.33,0.33,0.33)</only>
			</li>
			<li>
			  <weight>10</weight>
			  <only>(0.65,0.65,0.65)</only>
			</li>
			<li>
			  <weight>6</weight>
			  <min>(0.3,0.3,0.3)</min>
			  <max>(0.5,0.5,0.5)</max>
			</li>
		  </options>
		</colorGenerator>
		<comps>
			<li Class="VFECore.CompProperties_Shield">
				<shieldTags>
					<li>IndustrialBasic</li>
				</shieldTags>
				<useDeflectMetalEffect>true</useDeflectMetalEffect>
				<coveredBodyPartGroups>
					<li>Neck</li>
					<li>Torso</li>
					<li>Arms</li>
					<li>Hands</li>
					<li>Legs</li>
				</coveredBodyPartGroups>
				<offHandGraphicData>
					<texPath>Things/Apparel/PowerShield/PowerShield</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<shaderType>CutoutComplex</shaderType>
					<drawSize>1.6</drawSize>
				</offHandGraphicData>
				<offHandHoldOffset>
					<northDefault>
						<offset>(-0.3, 0, 0.3)</offset>
						<behind>true</behind>
					</northDefault>
					<east>
						<offset>(-0.1, 0, 0.1)</offset><!--? ? height-->
						<behind>true</behind>
					</east>
					<south>
						<offset>(0.3, -0.04, 0.2)</offset> <!--width ? height-->
					</south>
					<west>
						<offset>(0.1, 0, 0.1)</offset>
					</west>
				</offHandHoldOffset>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="LTS_Apparel_BasePowerShield">
		<defName>LTS_Apparel_Shield_Energy</defName>
		<label>force buckler</label>
		<description>A spacer portable repulsor shield formed by a hardened emitter. It is capable of blocking both melee and ranged attacks, and light enough to not encumber it's user, though is dramatically less useful while it's shield is down.\n\nThis type of shield is commonly used by advanced security forces and space marine commandos.</description>
		<graphicData>
			<texPath>Things/Apparel/EnergyShield/EnergyShield</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>ShieldBelt</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
			  <li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
		  <ComponentSpacer>4</ComponentSpacer>
		  <Plasteel>100</Plasteel>
		  <Uranium>10</Uranium>
		</costList>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.1</Flammability>
			<ArmorRating_Sharp>0.4</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Heat>0.2</ArmorRating_Heat>
			<WorkToMake>60000</WorkToMake>
			<Mass>2</Mass>
		</statBases>
		<equippedStatOffsets>
		  <!--<MoveSpeed>-0.4</MoveSpeed>-->
		</equippedStatOffsets>
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <weight>10</weight>
			  <only>(0.9,0.9,0.9)</only>
			</li>
			<li>
			  <weight>10</weight>
			  <only>(0.33,0.33,0.33)</only>
			</li>
			<li>
			  <weight>10</weight>
			  <only>(0.65,0.65,0.65)</only>
			</li>
			<li>
			  <weight>6</weight>
			  <min>(0.3,0.3,0.3)</min>
			  <max>(0.5,0.5,0.5)</max>
			</li>
		  </options>
		</colorGenerator>
		<comps>
			<li Class="VFECore.CompProperties_Shield">
				<shieldTags>
					<li>IndustrialBasic</li>
				</shieldTags>
				<useDeflectMetalEffect>true</useDeflectMetalEffect>
				<coveredBodyPartGroups>
					<li>Neck</li>
					<li>Torso</li>
					<li>Arms</li>
					<li>Hands</li>
					<li>Legs</li>
				</coveredBodyPartGroups>
				<offHandGraphicData>
					<texPath>Things/Apparel/EnergyShield/EnergyShield</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<shaderType>CutoutComplex</shaderType>
					<drawSize>1.6</drawSize>
				</offHandGraphicData>
				<offHandHoldOffset>
					<northDefault>
						<offset>(-0.3, 0, 0.3)</offset>
						<behind>true</behind>
					</northDefault>
					<east>
						<offset>(-0.1, 0, 0.1)</offset><!--? ? height-->
						<behind>true</behind>
					</east>
					<south>
						<offset>(0.3, -0.04, 0.2)</offset> <!--width ? height-->
					</south>
					<west>
						<offset>(0.1, 0, 0.1)</offset>
					</west>
				</offHandHoldOffset>
			</li>
			<li Class="VFECore.CompProperties_ShieldBubble">
				<compClass>VFECore.CompShieldBubble</compClass>
				<blockRangedAttack>true</blockRangedAttack>
				<blockMeleeAttack>true</blockMeleeAttack>
				<showWhenDrafted>false</showWhenDrafted>
				<showOnHostiles>false</showOnHostiles>
				<showOnNeutralInCombat>false</showOnNeutralInCombat>
				<shieldTexPath>Other/ShieldBubble</shieldTexPath>
				<EnergyShieldRechargeRate>0.2</EnergyShieldRechargeRate>
				<EnergyShieldEnergyMax>100</EnergyShieldEnergyMax>
				<minShieldSize>1.4</minShieldSize>
				<maxShieldSize>1.8</maxShieldSize>
				<disableRotation>true</disableRotation>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
		</comps>
		<tickerType>Normal</tickerType>
	</ThingDef>
</Defs>
