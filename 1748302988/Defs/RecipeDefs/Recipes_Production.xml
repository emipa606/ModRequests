<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>MakeChemfuelFromCorpse</defName>
		<label>Refine Chemfuel From Corpse</label>
		<description>If Dinosaurs can become fuel...</description>
		<jobString>Refining Chemfuel from a corpse.</jobString>
		<workAmount>350</workAmount>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<autoStripCorpses>true</autoStripCorpses>
		<workSkill>Intellectual</workSkill>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Corpses</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Corpses</li>
			</categories>
			<disallowedCategories>
				<li>CorpsesMechanoid</li>
			</disallowedCategories>
			<disallowedThingDefs>
            			<li>Corpse_Chicken</li>
				<li>Corpse_Hare</li>
				<li>Corpse_Snowhare</li>
				<li>Corpse_Squirrel</li>
				<li>Corpse_Rat</li>
				<li>Corpse_Iguana</li>
          		</disallowedThingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Corpse_Human</li>
			</thingDefs>
			<specialFiltersToAllow>
				<li>AllowCorpsesColonist</li>
				<li>AllowCorpsesStranger</li>
			</specialFiltersToAllow>
		</defaultIngredientFilter>
		<products>
			<Chemfuel>50</Chemfuel>
		</products>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
	</RecipeDef>

</Defs>
