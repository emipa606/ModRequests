<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>UP_BRifle</defName>
    <label>Battle Rifle</label>
    <description>A higher caliber version of the upgraded assault rifle. Has increased damage at the cost of increased weight and burst count.</description>
    <graphicData>
      <texPath>ModBRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>7500</WorkToMake>
      <Mass>4.5</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.73</AccuracyShort>
      <AccuracyMedium>0.77</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.50</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>25</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
	  <UP_ARifle>1</UP_ARifle>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_BRifle</defaultProjectile>
        <warmupTime>1.1</warmupTime>
        <range>36.9</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_BRifle</defName>
    <label>Battle rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>17</damageAmountBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>

</Defs>