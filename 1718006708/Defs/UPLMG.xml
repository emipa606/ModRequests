<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>UP_LLMG</defName>
		<label>Light LMG</label>
		<description>A gas-operated light machine gun that came from an upgradable assault rifle. Features one more bullet per brust and damage.</description>
		<graphicData>
			<texPath>ModSupRifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
		<statBases>
			<WorkToMake>10000</WorkToMake>
			<Mass>5.25</Mass>
			<AccuracyTouch>0.38</AccuracyTouch>
			<AccuracyShort>0.45</AccuracyShort>
			<AccuracyMedium>0.32</AccuracyMedium>
			<AccuracyLong>0.25</AccuracyLong>
			<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>35</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
			<UP_ARifle>1</UP_ARifle>
		</costList>
    <verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_LLMG</defaultProjectile>
				<warmupTime>1.8</warmupTime>
				<range>25.9</range>
				<ticksBetweenBurstShots>6</ticksBetweenBurstShots>
				<burstShotCount>7</burstShotCount>
				<soundCast>Shot_Minigun</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_LLMG</defName>
    <label>Light LMG bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>46</speed>
    </projectile>
  </ThingDef>

</Defs>