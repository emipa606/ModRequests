<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- ================== ARID SHRUBLAND ================== -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BiomeDef[defName="AridShrubland"]/plantDensity</xpath>
		<value>
			<plantDensity>0.74</plantDensity>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BiomeDef[defName="AridShrubland"]/wildPlantRegrowDays</xpath>
		<value>
			<wildPlantRegrowDays>20</wildPlantRegrowDays>
		</value>
	</Operation>
	
	<!-- ================== DESERT ================== -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BiomeDef[defName="Desert"]/plantDensity</xpath>
		<value>
			<plantDensity>0.17</plantDensity>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BiomeDef[defName="Desert"]/wildPlantRegrowDays</xpath>
		<value>
			<wildPlantRegrowDays>25</wildPlantRegrowDays>
		</value>
	</Operation>
  
</Patch>