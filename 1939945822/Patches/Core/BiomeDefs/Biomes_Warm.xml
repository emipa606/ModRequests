<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- ================== TROPICAL RAINFOREST ================== -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BiomeDef[defName="TropicalRainforest"]/plantDensity</xpath>
		<value>
			<plantDensity>3</plantDensity>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BiomeDef[defName="TropicalRainforest"]/wildPlantRegrowDays</xpath>
		<value>
			<wildPlantRegrowDays>13</wildPlantRegrowDays>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/BiomeDef[defName="TropicalRainforest"]/wildPlants</xpath>
		<value>
			<wildPlants>
				<Plant_Grass>1.5</Plant_Grass>
				<Plant_TallGrass>2.0</Plant_TallGrass>
				<Plant_ShrubLow>1.0</Plant_ShrubLow>
				<Plant_Alocasia>1.1</Plant_Alocasia>
				<Plant_TreeCecropia>1.3</Plant_TreeCecropia>
				<Plant_TreePalm>1.2</Plant_TreePalm>
				<Plant_TreeBamboo>0.6</Plant_TreeBamboo>
				<Plant_TreeTeak>0.9</Plant_TreeTeak>
				<Plant_Bush>0.15</Plant_Bush>
				<Plant_Clivia>0.2</Plant_Clivia>
				<Plant_Berry>0.05</Plant_Berry>
				<Plant_Rose>0.009</Plant_Rose>
				<Plant_Daylily>0.009</Plant_Daylily>
				<Plant_Dandelion>0.009</Plant_Dandelion>
				<Plant_Rafflesia>0.006</Plant_Rafflesia>
				<Plant_TreeCocoa>0.003</Plant_TreeCocoa>
			</wildPlants>
		</value>
	</Operation>
	
