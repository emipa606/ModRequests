<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!--====================================== Grass ======================================== -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Grass"]/plant/fertilityMin</xpath>
		<value>
			<fertilityMin>0.4</fertilityMin>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Grass"]/plant/fertilitySensitivity</xpath>
		<value>
			<fertilitySensitivity>0.9</fertilitySensitivity>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Grass"]/plant/growDays</xpath>
		<value>
			<growDays>1.5</growDays>
		</value>
	</Operation>
	
	<!--====================================== Tall Grass ======================================== -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_TallGrass"]/plant/fertilitySensitivity</xpath>
		<value>
			<fertilitySensitivity>0.9</fertilitySensitivity>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_TallGrass"]/plant/growDays</xpath>
		<value>
			<growDays>2</growDays>
		</value>
	</Operation>
</Patch>
