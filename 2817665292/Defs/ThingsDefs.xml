<Defs>

	<DesignatorDropdownGroupDef>
		<defName>NiceLampsDesignatorDropdownDef</defName>
	</DesignatorDropdownGroupDef>

  <ThingDef ParentName="LampBase">
    <defName>CylindricalLamp</defName>
    <label>Cylindrical Lamp</label>
	<designatorDropdown>NiceLampsDesignatorDropdownDef</designatorDropdown>
    <description>A fine lamp providing comfortable lighting.</description>
	<graphicData>
      <drawSize>(1,1.1)</drawSize>
      <drawOffset>(0,0,0.05)</drawOffset>
      <texPath>Buildings/CylindricalLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.27, 0.4, 0.2)</volume>
        <offset>(0,0,-0.37)</offset>
      </shadowData>
    </graphicData>
    <costList>
      <Steel>15</Steel>
	  <Cloth>15</Cloth>
    </costList>
	<statBases>
		<Mass>4</Mass>
		<WorkToBuild>300</WorkToBuild>
	</statBases>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(252,200,130,0)</glowColor>
      </li>
	  <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>25</basePowerConsumption>
      </li>
    </comps>
  </ThingDef>
  
