  <ThingDef ParentName="LampBase">
    <defName>StringLights</defName>
    <label>String Lights</label>
	<designatorDropdown>NiceLampsDesignatorDropdownDef</designatorDropdown>
    <description>A set of wall-mountable string lights.</description>
	<graphicData>
      <drawSize>(1,1)</drawSize>
      <drawOffset>(0,0,0)</drawOffset>
      <texPath>Buildings/StringLights</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<altitudeLayer>Item</altitudeLayer>
    <passability>Standable</passability>
	<size>(1,1)</size>

    <costList>
      <Steel>15</Steel>
	</costList>
	<statBases>
		<Mass>1</Mass>
		<MaxHitPoints>10</MaxHitPoints>
		<WorkToBuild>100</WorkToBuild>
	</statBases>
    <comps>
      <li Class="CompProperties_WallGlower">
		<glowerDefName>StringLights_WallGlower</glowerDefName>
	  </li>
     <!-- <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(252,200,130,0)</glowColor>
      </li> -->
	  <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>10</basePowerConsumption>
      </li>
    </comps>
	<building>
      <isEdifice>false</isEdifice>
	  <canPlaceOverWall>true</canPlaceOverWall>
    </building>
	<tickerType>Never</tickerType>
    <designationCategory>Furniture</designationCategory>
    <rotatable>true</rotatable>
	<selectable>true</selectable>
	<destroyable>true</destroyable>
	<isAutoAttackableMapObject>false</isAutoAttackableMapObject>
	<clearBuildingArea>false</clearBuildingArea>
  </ThingDef>

  <!-- Main light glower -->

  <ThingDef Name="StringLightsWallGlower" ParentName = "BuildingBase">
    <defName>StringLights_WallGlower</defName>
	<label>UNUSED</label>
	<description>UNUSED</description>
	<category>Mote</category>
	<graphicData>
      <texPath>Buildings/WallGlow</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
