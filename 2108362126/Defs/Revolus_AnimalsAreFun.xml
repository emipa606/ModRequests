<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- go walkies -->
	
	<JoyGiverDef>
		<defName>Revolus_AnimalsAreFun_Walkies_JoyGiver</defName>
		<giverClass>Revolus.AnimalsAreFun.OutsidePath_JoyGiver</giverClass>
		<baseChance>4</baseChance>
		<pctPawnsEverDo>0.67</pctPawnsEverDo>
		<jobDef>Revolus_AnimalsAreFun_Walkies_Job</jobDef>
		<joyKind>Social</joyKind>
	</JoyGiverDef>

	<JobDef>
		<defName>Revolus_AnimalsAreFun_Walkies_Job</defName>
		<driverClass>Revolus.AnimalsAreFun.Walkies_JobDriver</driverClass>
		<reportString>walking a pet.</reportString>
		<joyDuration>8000</joyDuration>
		<joyKind>Social</joyKind>
		<joySkill>Animals</joySkill>
		<joyXpPerTick>0.004</joyXpPerTick>
	</JobDef>
	
	<!-- play fetch -->
	
	<JoyGiverDef>
		<defName>Revolus_AnimalsAreFun_Fetch_JoyGiver</defName>
		<giverClass>Revolus.AnimalsAreFun.OutsidePath_JoyGiver</giverClass>
		<baseChance>2</baseChance>
		<pctPawnsEverDo>0.67</pctPawnsEverDo>
		<jobDef>Revolus_AnimalsAreFun_Fetch_Job</jobDef>
		<joyKind>Gaming_Dexterity</joyKind>
    <requiredCapacities>
      <li>Sight</li>
      <li>Manipulation</li>
    </requiredCapacities>
	</JoyGiverDef>

	<JobDef>
		<defName>Revolus_AnimalsAreFun_Fetch_Job</defName>
		<driverClass>Revolus.AnimalsAreFun.Fetch_JobDriver</driverClass>
		<reportString>playing fetch.</reportString>
		<joyDuration>6000</joyDuration>
		<joyKind>Gaming_Dexterity</joyKind>
		<joySkill>Animals</joySkill>
		<joyXpPerTick>0.002</joyXpPerTick>
	</JobDef>

	<JobDef>
		<defName>Revolus_AnimalsAreFun_Walkies_Job_Animal</defName>
		<driverClass>Revolus.AnimalsAreFun.Fetch_JobDriver_Animal</driverClass>
		<reportString>playing fetch.</reportString>
	</JobDef>
</Defs>
