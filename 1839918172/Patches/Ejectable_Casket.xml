<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
    <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="CryptosleepCasket"]/building</xpath>
            <value>
                    <isPlayerEjectable>true</isPlayerEjectable>
            </value>
    </li>
    <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="CryptosleepCasket"]/description</xpath>
        <value>
            <description>A self-powered sarcophagus designed to keep a person in a state of suspended animation for many years. Newer models allow the occupant to eject themselves without outside intervention.</description>
        </value>
    </li>
    </operations>
  </Operation>

</Patch>