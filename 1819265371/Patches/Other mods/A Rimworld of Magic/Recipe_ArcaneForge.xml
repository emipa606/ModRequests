<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>A RimWorld of Magic</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName = "ArcaneForge_ElephantSpear" or defName = "ArcaneForge_ThrumboAxe" or defName = "ArcaneForge_ElephantBow" or defName = "ArcaneForge_ThrumBow"]/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite>TM_ArcaneForging</researchPrerequisite>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>