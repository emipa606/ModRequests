<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>A RimWorld of Magic</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "TM_ElephantSpear" or defName = "TM_ElephantBow" or @Name="TM_BaseWand"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite>
                            <li>TS_TM_MagicWeapons</li>
                        </researchPrerequisite>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "TM_DefenderStaff" or defName = "TM_BlazingPowerStaff" or defName = "TM_ThrumBow" or defName = "TM_ThrumboAxe"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite>
                            <li>TS_TM_AdvancedMagicWeapons</li>
                        </researchPrerequisite>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>