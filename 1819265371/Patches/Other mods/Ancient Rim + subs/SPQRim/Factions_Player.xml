<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ancient Rim - SPQRim</li>
		</mods>
		<match Class="PatchOperationInsert">
			<xpath>/Defs/FactionDef[defName = "AR_PlayerFaction"]</xpath>
			<value>
			    <FactionDef ParentName="PlayerFactionBase">
			      <defName>TS_AR_PlayerFactionNoTech</defName>
			      <label>Hellenic colony (No starting techs)</label>
			      <description>Your own colony.</description>
			      <isPlayer>true</isPlayer>
			      <basicMemberKind>AR_Colonist</basicMemberKind>
			      <pawnSingular>colonist</pawnSingular>
			      <pawnsPlural>colonists</pawnsPlural>
			      <techLevel>Medieval</techLevel>
			      <backstoryCategories>
			        <li>Civil</li>
			      </backstoryCategories>
			      <factionIconPath>Icon/LaurelWreath</factionIconPath>
			      <playerInitialSettlementNameMaker>NamerFactionBaseGreek</playerInitialSettlementNameMaker>
			  		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
			      <settlementNameMaker>NamerFactionBaseGreek</settlementNameMaker>
			      <geneticVariance>1</geneticVariance>
			  		<hairTags>
			  			<li>Roman</li>
			  		</hairTags>
			  		<apparelStuffFilter>
			  			<thingDefs>
			  				<li>Synthread</li>
			  			</thingDefs>
			  		</apparelStuffFilter>
			  	    <settlementTexturePath>Icon/FactionBase</settlementTexturePath>
			      <colorSpectrum>
			        <li>(0, 0.737, 0.847)</li>
			      </colorSpectrum>
			    </FactionDef>
			</value>
		</match>
	</Operation>
	
</Patch>