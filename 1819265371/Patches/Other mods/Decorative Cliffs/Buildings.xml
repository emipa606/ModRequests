<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[1.1] Decorative Cliffs</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name = "HillBase"]</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>TS_Walls</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name = "CliffBase"]</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Stonecutting</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name = "MetalCliffBase"]</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Smithing</li>
                        </researchPrerequisites>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>