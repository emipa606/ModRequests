<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>High Density Hydroponics</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationInsert">
					<xpath>/Defs/ResearchProjectDef[defName = "TS_Walls"]</xpath>
					<value>
						<ResearchProjectDef>
							<defName>TS_HDH_MiniHydroponics</defName>
							<label>mini hydroponics</label>
							<description>Your researcher has finally figured out a way to minimize the existing hydroponics technology, resulting in the creation of the mini hydroponics bay.</description>
							<baseCost>600</baseCost>
							<techLevel>Industrial</techLevel>
							<prerequisites>
								<li>Hydroponics</li>
							</prerequisites>
						</ResearchProjectDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>