<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Remote Tech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName = "rxMakeCharcoal"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite>TS_Firemaking</researchPrerequisite>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName = "rxMakeMiningExplosiveComponent"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite>TS_rx_MiningExplosives</researchPrerequisite>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>