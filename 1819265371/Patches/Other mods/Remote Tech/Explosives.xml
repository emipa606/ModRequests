						<researchPrerequisites>
							<li>IEDs</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "rxRemoteEmpBombPlaced"]</xpath>
					<value>
						<researchPrerequisites>
							<li>rxEmpMine</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "rxMiningChargeChunks"]</xpath>
