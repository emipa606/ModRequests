						<researchPrerequisites>
							<li>rxSealingFoam</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "rxRemoteSleepingGasCanPlaced"]</xpath>
					<value>
						<researchPrerequisites>
							<li>rxSleepingGas</li>
						</researchPrerequisites>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>