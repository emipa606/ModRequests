<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Garden Gourmet</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Oven" or defName = "HandCanningstove" or defName = "GrindStone"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_Cooking</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VG_SaltMine"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_VG_Salt</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "ElectricGrindStone"]</xpath>
					<value>
						<researchPrerequisites>
							<li>Electricity</li>
						</researchPrerequisites>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>