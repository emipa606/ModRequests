<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Vanilla Plants Expanded</li>
    </mods>
    <match Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "VCE_Onion" or defName = "VCE_Pumpkin" or defName = "VCE_Pepper" or defName = "VCE_Peas" or defName = "VCE_Eggplant" or defName = "VCE_Cabbage" or defName = "VCE_Beet" or defName = "VCE_Tomato"]/plant</xpath>
                <value>
                    <sowResearchPrerequisites>
                        <li>TS_Agriculture</li>
                    </sowResearchPrerequisites>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "VCE_Grass" or defName = "VCE_TallGrass"]/plant</xpath>
                <value>
                    <sowResearchPrerequisites>
                        <li>TS_DomHerb</li>
                    </sowResearchPrerequisites>
                </value>
            </li>
        </operations>
    </match>
</Operation>

</Patch>