<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Guards For Me</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "GFM_GuardSpot"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_GFM_BasicSecurity</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "GFM_PatrolBase"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_GFM_BasicSecurity</li>
						</researchPrerequisites>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>

