<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Guards For Me</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationInsert">
					<xpath>/Defs/ResearchProjectDef[defName = "TS_Walls"]</xpath>
					<value>
						<ResearchProjectDef>
							<defName>TS_GFM_BasicSecurity</defName>
							<label>basic security</label>
							<baseCost>250</baseCost>
							<techLevel>Neolithic</techLevel>
							<description>Having cover is nice, but it would be even nicer if you wouldn't need to use that cover for being surprise attacked. With your researcher's newest idea, you will never be caught off guard again!</description>
							<prerequisites>
								<li>TS_BasicCover</li>
							</prerequisites>
						</ResearchProjectDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>

