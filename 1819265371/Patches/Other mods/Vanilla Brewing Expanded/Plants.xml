<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Brewing Expanded</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName = "VBE_Plant_Coffee" or defName = "VBE_Plant_Tea" or defName = "VBE_Plant_Tobacco"]/plant</xpath>
            <value>
                <sowResearchPrerequisites>
                    <li>TS_Agriculture</li>
                </sowResearchPrerequisites>
            </value>
        </match>
    </Operation>

</Patch>