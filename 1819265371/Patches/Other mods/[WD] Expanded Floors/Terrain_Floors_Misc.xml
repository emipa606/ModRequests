<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[WD] Expanded Floors</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TerrainDef[defName = "WDPackedDirtFloor"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_WDEF_PrimitiveRoads</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TerrainDef[@Name = "WDJadeFloorBase"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_Art</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TerrainDef[defName = "WDStrawFloor"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_StrawFloor</li>
						</researchPrerequisites>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>