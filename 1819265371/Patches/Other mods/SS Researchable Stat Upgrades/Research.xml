<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>SS Researchable Stat Upgrades</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName = "ProductivityI"]</xpath>
					<value>
						<prerequisites>
							<li>TS_MethodicalResearch</li>
						</prerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName = "Psychology"]</xpath>
					<value>
						<prerequisites>
							<li>TS_MethodicalResearch</li>
						</prerequisites>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>