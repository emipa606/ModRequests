<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Zen Garden</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "ZEN_Hedge"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_ZEN_FengShui</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "ZEN_StackedRocks"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_ZEN_FengShui</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "ZEN_LargeStackedRocks"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_ZEN_FengShui</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "ZEN_BorderPath"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_ZEN_FengShui</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "ZEN_BorderPond"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_ZEN_FengShui</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "RakedBase"]</xpath>
					<value>
						<researchPrerequisites>
							<li>TS_ZEN_FengShui</li>
						</researchPrerequisites>
					</value>
				</li>
				
				
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Fences</li>
					</mods>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName = "ZEN_Fence"]</xpath>
						<value>
							<researchPrerequisites>
								<li>TS_BasicCover</li>
							</researchPrerequisites>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName = "ZEN_Fence"]</xpath>
						<value>
							<researchPrerequisites>
								<li>TS_VF_StoneFences</li>
							</researchPrerequisites>
						</value>
					</match>
				</li>	
			</operations>
		</match>
	</Operation>
	
</Patch>