<?Yml version="1.0" encoding="utf8" ?>
<Defs>

	<!--Coal and Fuel-->

	<ResearchProjectDef>
		<defName>AM_CharcoalProduction</defName>
		<label>charcoal</label>
		<tab>AtlasMaterials</tab>
		<description>Learn how to develop charcoal: a more effective fuel source that is made through burning wood anaerobically.</description>
		<baseCost>200</baseCost>
		<techLevel>Neolithic</techLevel>
		<researchViewY>1</researchViewY>
		<researchViewX>4</researchViewX>
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>AM_CokeCoalProduction</defName>
		<label>coke coal</label>
		<tab>AtlasMaterials</tab>
		<description>Through the same process as charcoal production: burning coal or charcoal further in the absence of air yields a purer fuel that is even more effective than coal.</description>
		<baseCost>400</baseCost>
		<techLevel>Medieval</techLevel>
		<prerequisites><li>AM_CharcoalProduction</li></prerequisites>
		<researchViewY>1</researchViewY>
		<researchViewX>5</researchViewX>
	</ResearchProjectDef>

	<!--Plastics-->

	<ResearchProjectDef>
		<defName>AM_BasicPlastics</defName>
		<label>basic plastics</label>
		<tab>AtlasMaterials</tab>
		<description>Learn how to extract crude oil from oil shale and convert it to chemfuel and mixed plastic material, which can be later used to create laminated wood.</description>
		<baseCost>250</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites><li>Electricity</li></prerequisites>
		<researchViewY>2</researchViewY>
		<researchViewX>0</researchViewX>
	</ResearchProjectDef>

  <ResearchProjectDef>
    <defName>BiofuelRefining</defName>
    <label>biofuel refining</label>
    <description>Gain the ability to process biological matter into chemfuel. A renewable substitute to using crude oil.</description>
    <baseCost>400</baseCost>
	<tab>AtlasMaterials</tab>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>AM_BasicPlastics</li>
    </prerequisites>
    <researchViewY>1</researchViewY>
    <researchViewX>0</researchViewX>
  </ResearchProjectDef>
 
  <ResearchProjectDef>
    <defName>AM_AlgaeRefining</defName>
    <label>algae refining</label>
    <description>Gain the ability to process algae into usable bio-oil, a highly renewable source substitute for crude oil that can only be grown in hydroponics.</description>
    <baseCost>500</baseCost>
	<tab>AtlasMaterials</tab>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>BiofuelRefining</li>
    </prerequisites>
    <researchViewY>0</researchViewY>
    <researchViewX>0</researchViewX>
  </ResearchProjectDef>
  
	<ResearchProjectDef>
		<defName>AM_AdvPlastics</defName>
		<label>advanced plastics</label>
		<tab>AtlasMaterials</tab>
		<description>Develop further into plastic production, learning how to refine crude oil and create acrylic and UHMW Plastic.</description>
		<baseCost>700</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites><li>AM_BasicPlastics</li></prerequisites>
		<researchViewY>2</researchViewY>
