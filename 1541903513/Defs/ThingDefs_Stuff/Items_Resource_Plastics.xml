		<graphicData>
			<texPath>Things/Resources/AM_GeneralPlastic</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<color>(130,130,130)</color>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>4.5</MarketValue>
      <Mass>0.020</Mass>
      <Flammability>1.2</Flammability>
      <StuffPower_Armor_Sharp>1.05</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.95</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.25</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>0.5</StuffPower_Insulation_Cold>
