        <Flammability>1</Flammability>
        <WorkToMake>2</WorkToMake>
				<WorkToBuild>2</WorkToBuild>
        <DoorOpenSpeed>1.1</DoorOpenSpeed>
			</statFactors>			
		</stuffProps>
	</ThingDef>

