<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--Manufactored Woods-->
	
	<ThingDef ParentName="ResourceVerbBase">
		<defName>AM_LWood</defName>
		<label>laminated wood</label>
		<description>Cut and smoothed wooden boards that have had a layer of plastic put onto them, increasing strength, making them easier to work with and adding a slight fire resistance.</description>
		<graphicData>
			<texPath>Things/Resources/AM_LWood</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<color>(255,255,255)</color>
		</graphicData>
    <equippedAngleOffset>-40</equippedAngleOffset>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>1.6</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.45</Mass> 
      <Flammability>0.7</Flammability>
      <DeteriorationRate>0.1</DeteriorationRate>
      <StuffPower_Armor_Sharp>0.64</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.64</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.9</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>8</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>4</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.25</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <stuffProps>
      <stuffAdjective>laminated wood</stuffAdjective>
      <categories>
        <li>Woody</li>
      </categories>
      <commonality>0.7</commonality>
      <color>(123,97,57)</color>
      <constructEffect>ConstructWood</constructEffect>
      <appearance>Planks</appearance>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.85</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>0.75</Flammability>
        <WorkToMake>0.5</WorkToMake>
				<WorkToBuild>0.5</WorkToBuild>
        <DoorOpenSpeed>1.2</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <tools>
      <li>
        <label>plank</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>
