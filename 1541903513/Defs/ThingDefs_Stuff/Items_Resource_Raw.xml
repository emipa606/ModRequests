<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="AM_RawResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>100</stackLimit>
		<statBases>
			<Beauty>-15</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
		<tradeability>None</tradeability>
	</ThingDef>

  
 	<ThingDef ParentName="AM_RawResourceBase">
		<defName>AM_RawMud</defName>
		<label>mud clumps</label>
		<description>Clumps of mud that has been dug up. Can be baked into adobe at a kiln.</description>
		<graphicData>
			<texPath>Things/Resources/AM_Mud</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.01</MarketValue>
		     <Mass>0.20</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

 	<ThingDef ParentName="AM_RawResourceBase">
		<defName>AM_RawClay</defName>
		<label>raw clay</label>
		<description>Raw clay that has been mined or dug up from the ground, essential for complex masonry materials such as concrete and bricks.</description>
		<graphicData>
			<texPath>Things/Resources/AM_Clay</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.1</MarketValue>
		     <Mass>0.20</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

 	<ThingDef ParentName="AM_RawResourceBase">
		<defName>AM_Lime</defName>
		<label>slaked lime</label>
		<description>Limestone that has been heated to immense temperatures, slaked and then powdered. Used in the production of concrete and plaster.</description>
		<graphicData>
			<texPath>Things/Resources/AM_Lime</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.1</MarketValue>
		     <Mass>0.20</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

 	<ThingDef ParentName="AM_RawResourceBase">
		<defName>AM_FlyAsh</defName>
		<label>fly ash</label>
		<description>The main byproduct of burning large quantities of coal or charcoal. Fly ash has many uses, ranging from bricks to substitute plaster and cement.</description>
		<graphicData>
			<texPath>Things/Resources/AM_FlyAsh</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.05</MarketValue>
		     <Mass>0.20</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>


 	<ThingDef ParentName="AM_RawResourceBase">
		<defName>AM_RawSand</defName>
