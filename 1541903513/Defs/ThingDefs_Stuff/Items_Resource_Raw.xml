	<!--Chunks-->
	
  <ThingDef ParentName="ChunkRockBase">
    <defName>AM_OilShaleChunk</defName>
    <label>oil shale chunk</label>
	<description>A lightweight chunk of oil shale, densely filled with biological matter that can be processed into usable oil at a refinery.</description>
    <graphicData>
      <color>(60,65,60)</color>
    </graphicData>
	<stackLimit>3</stackLimit>
    <statBases>
      <Mass>8</Mass>
    </statBases>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <butcherProducts>
      <AM_RawClay>10</AM_RawClay>
    </butcherProducts>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
	<resourceReadoutPriority>Middle</resourceReadoutPriority>
  </ThingDef>

 	<ThingDef ParentName="AM_RawResourceBase">
		<defName>AM_RawAlgae</defName>
		<label>algae lumps</label>
		<description>Lumps of algae: a single cell plant that can be used to produce crude oil.</description>
		<graphicData>
      <texPath>Things/Resources/AM_RawAlgae</texPath>
      <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stackLimit>100</stackLimit>
		<statBases>
			<MarketValue>0.1</MarketValue>
		     <Mass>0.1</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>
	
 	<ThingDef ParentName="ResourceBase">
		<defName>AM_CrudeOil</defName>
		<label>crude oil</label>
		<description>A complex mixture of hydrocarbons that require further refining to be useful.</description>
		<graphicData>
      <texPath>Things/Resources/AM_OilBarrel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <color>(180,180,180)</color>
		</graphicData>
		<stackLimit>100</stackLimit>
		<statBases>
			<MarketValue>3.5</MarketValue>
		     <Mass>1</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

 	<ThingDef ParentName="ResourceBase">
		<defName>AM_BioOil</defName>
		<label>bio-oil</label>
		<description>A much more renewable mixture of hydrocarbons created from algae. Much like crude oil; it requires further refining to be useful.</description>
		<graphicData>
      <texPath>Things/Resources/AM_OilBarrel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <color>(195,230,195)</color>
		</graphicData>
		<stackLimit>100</stackLimit>
		<statBases>
			<MarketValue>3.5</MarketValue>
		     <Mass>0.75</Mass>
