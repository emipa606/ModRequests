<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Oil crops ==============================-->

	<ThingDef ParentName="PlantBase">
		<defName>AM_Plant_Algae</defName>
		<label>algae pod</label>
		<description>An outcrop of cultivated algae, a bundle of single cell plants that can be refined into a more renewable form of crude oil called "Bio-oil". Which has the same properties as crude oil.</description>
		<statBases>
			<MaxHitPoints>95</MaxHitPoints>
      <Nutrition>0.02</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/AM_RawAlgaeCrop</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
        <ingestible />
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<maxMeshCount>4</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>AM_RawAlgae</harvestedThingDef>
			<harvestYield>10</harvestYield>
		<neverBlightable>true</neverBlightable>
			<sowTags>
				<li>Hydroponic</li>
			</sowTags>
			<sowMinSkill>4</sowMinSkill>
			<sowResearchPrerequisites>
				<li>AM_AlgaeRefining</li>
			</sowResearchPrerequisites>
			<topWindExposure>0.05</topWindExposure>
			<growDays>3</growDays>
			      <soundHarvesting>Interact_ConstructDirt</soundHarvesting>
			<visualSizeRange>0.3~1.00</visualSizeRange>
      <wildOrder>2</wildOrder>
		</plant>
	</ThingDef>



</Defs>
