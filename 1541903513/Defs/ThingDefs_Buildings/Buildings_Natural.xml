<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="RockBase">
    <defName>AM_MineableClay</defName>
    <label>compacted clay</label>
    <description>A rich source of fire clay, used widely in bricks and other masonry.</description>
    <graphicData>
      <texPath>Things/Building/Linked/Rock_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(98,61,51)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>AM_RawClay</mineableThing>
      <mineableYield>25</mineableYield>
      <mineableScatterCommonality>0.35</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>10</min>
        <max>20</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
 
  <ThingDef ParentName="RockBase">
    <defName>AM_MineableShale</defName>
    <label>oil shale</label>
    <description>A rock that contains a significant amount of organic material in the form of solid kerogen. Up to 1/3 of the rock can be solid organic material which can be processed into oil.</description>
    <graphicData>
      <texPath>Things/Building/Linked/Rock_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(60,70,60)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>AM_OilShaleChunk</mineableThing>
      <mineableDropChance>0.8</mineableDropChance>
      <mineableScatterCommonality>0.75</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>30</min>
        <max>40</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

   <ThingDef ParentName="RockBase">
    <defName>AM_MineableCoal</defName>
    <label>coal deposit</label>
    <description>A natural deposit of coal, biomass that has been compressed for hundreds of even thousands of years.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(44,44,44)</color>
      <colorTwo>(50,50,50)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>AM_Coal</mineableThing>
      <mineableYield>25</mineableYield>
      <mineableScatterCommonality>0.25</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>8</min>
        <max>20</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>


</Defs>
