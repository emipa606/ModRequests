<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TerrainDef ParentName="FloorBase">
		<defName>Concrete</defName>
		<label>pseudo concrete</label>
		<description>An attempt at making concrete-looking flooring. Through the use of steel slag gravel that has been flattened. Cheap but also quite ugly.</description>
		<texturePath>Terrain/Surfaces/Concrete</texturePath>
		<edgeType>Hard</edgeType>
		<renderPrecedence>70</renderPrecedence>
		<statBases>
			<Beauty>-1</Beauty>
			<WorkToBuild>100</WorkToBuild>
		</statBases>
		<costList>
			<Steel>1</Steel>
		</costList>
		<designationHotKey>Misc6</designationHotKey>
    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
	</TerrainDef>

	
	<!--Polished Flooring-->
	
	  <DesignatorDropdownGroupDef>
    <defName>AM_Floor_Polished</defName>
	  </DesignatorDropdownGroupDef>

	
	<TerrainDef ParentName="FloorBase">
		<defName>AM_PolishedConcrete</defName>
		<label>polished concrete</label>
		<description>Quick pour concrete that has been buffed over, leaving a smooth and slightly reflective finish.</description>
		<texturePath>Things/Building/Floors/AM_PolishedFlooring</texturePath>
		<color>(140,140,140)</color>
		<edgeType>Hard</edgeType>
		<renderPrecedence>150</renderPrecedence>
		<designatorDropdown>AM_Floor_Polished</designatorDropdown>
		<statBases>
			<Beauty>2</Beauty>
			<WorkToBuild>140</WorkToBuild>
		</statBases>
		<costList>
			<Stuff_ConcreteAM>1</Stuff_ConcreteAM>
		</costList>
    <researchPrerequisites>
      <li>AM_BasicConcrete</li>
    </researchPrerequisites>
	</TerrainDef>

	<TerrainDef ParentName="FloorBase">
		<defName>AM_PolishedReinforcedConcrete</defName>
		<label>polished reinforced concrete</label>
		<description>Reinforced concrete that has been buffed over, leaving a smooth and slightly reflective finish with a deep blue hue.</description>
		<texturePath>Things/Building/Floors/AM_PolishedFlooring</texturePath>
		<color>(130,130,150)</color>
		<edgeType>Hard</edgeType>
		<renderPrecedence>150</renderPrecedence>
		<designatorDropdown>AM_Floor_Polished</designatorDropdown>
		<statBases>
			<Beauty>3</Beauty>
			<WorkToBuild>160</WorkToBuild>
		</statBases>
		<costList>
			<Stuff_RefConcreteAM>1</Stuff_RefConcreteAM>
		</costList>
    <researchPrerequisites>
      <li>AM_AdvancedConcrete</li>
    </researchPrerequisites>
	</TerrainDef>

	<TerrainDef ParentName="FloorBase">
		<defName>AM_PolishedPlaster</defName>
		<label>polished plaster</label>
		<description>Plaster that has been smoothed out as much as possible, not very reflective but still quite pretty.</description>
		<texturePath>Things/Building/Floors/AM_PolishedFlooring</texturePath>
		<color>(245,245,245)</color>
		<edgeType>Hard</edgeType>
		<renderPrecedence>150</renderPrecedence>
		<designatorDropdown>AM_Floor_Polished</designatorDropdown>
		<statBases>
			<Beauty>1</Beauty>
			<WorkToBuild>120</WorkToBuild>
		</statBases>
		<costList>
			<Stuff_PlasterAM>1</Stuff_PlasterAM>
		</costList>
    <researchPrerequisites>
      <li>AM_BasicLime</li>
    </researchPrerequisites>
	</TerrainDef>

</Defs>
