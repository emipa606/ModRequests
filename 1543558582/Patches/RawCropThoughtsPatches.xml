<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Add tasteThoughts to raw food that don't have them already -->
  <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "RawPotatoes"]/ingestible</xpath>
    <value>
      <tasteThought>AteRawPotato</tasteThought>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "RawRice"]/ingestible</xpath>
    <value>
      <tasteThought>AteRawRice</tasteThought>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "RawAgave"]/ingestible</xpath>
    <value>
      <tasteThought>AteRawAgave</tasteThought>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "RawCorn"]/ingestible</xpath>
    <value>
      <tasteThought>AteRawCorn</tasteThought>
    </value>
  </Operation>

  <!-- Replace tasteThoughts in raw foods that already have them -->
  <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "RawBerries"]/ingestible/tasteThought</xpath>
    <value>
      <tasteThought>AteRawBerries</tasteThought>
    </value>
  </Operation>

</Patch>
