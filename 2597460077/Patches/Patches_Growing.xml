            <parts>
                <li Class="ResearchableStatUpgrades.StatPart_ResearchDependent">
                    <researchFactors>
                        <li>
                            <def>AdvGrowingIII</def>
                            <factor>1.025</factor>
                        </li>
                        <li>
                            <def>AdvGrowingIV</def>
