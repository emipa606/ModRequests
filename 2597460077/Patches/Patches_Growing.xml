        <xpath>/Defs/StatDef[defName="PlantWorkSpeed"]</xpath>
        <value>
            <parts>
                <li Class="ResearchableStatUpgrades.StatPart_ResearchDependent">
                    <researchFactors>
                        <li>
                            <def>AdvGrowingI</def>
                            <factor>1.05</factor>
                        </li>
                        <li>
                            <def>AdvGrowingII</def>
                            <factor>1.075</factor>
                        </li>
                        <li>
                            <def>AdvGrowingIII</def>
                            <factor>1.075</factor>
                        </li>
                        <li>
                            <def>AdvGrowingIV</def>
                            <factor>1.125</factor>
