<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Better ground-penetrating scanner</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ResearchProjectDef[defName="ScannerEfficiency"]/researchMods</xpath>
      <value>
        <researchMods>
          <li Class="ResearchableStatUpgrades.ResearchMod_EditCompProperties">
            <def>LongRangeMineralScanner</def>
            <type>CompProperties_LongRangeMineralScanner</type>
            <fieldName>scanFindMtbDays</fieldName>
            <value>2</value>
          </li>
          <li Class="ResearchableStatUpgrades.ResearchMod_EditCompProperties">
            <def>LongRangeMineralScanner</def>
            <type>CompProperties_LongRangeMineralScanner</type>
            <fieldName>scanFindGuaranteedDays</fieldName>
            <value>4</value>
          </li>


          <li Class="ResearchableStatUpgrades.ResearchMod_EditCompProperties">
            <def>GroundPenetratingScanner</def>
            <type>BGPScanner.CompProperties_BetterScannerMineralsDeep</type>
            <fieldName>scanFindMtbDays</fieldName>
            <value>2</value>
          </li>
          <li Class="ResearchableStatUpgrades.ResearchMod_EditCompProperties">
            <def>GroundPenetratingScanner</def>
            <type>BGPScanner.CompProperties_BetterScannerMineralsDeep</type>
            <fieldName>scanFindGuaranteedDays</fieldName>
            <value>4</value>
          </li>
        </researchMods>
      </value>
    </match>
  </Operation>
</Patch>