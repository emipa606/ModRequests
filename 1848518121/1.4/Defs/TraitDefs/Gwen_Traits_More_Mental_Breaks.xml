<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <TraitDef MayRequire="Mlie.MoreMentalBreaks">
    <defName>GWT_DeathWish</defName>
    <commonality>1</commonality>
    <degreeDatas>
      <li>
        <label>death wish</label>
        <description>{PAWN_nameDef} wants to die one way or another.</description>
        <theOnlyAllowedMentalBreaks>
          <li>SelfHarm_Masochist</li>
        </theOnlyAllowedMentalBreaks>
        <randomMentalState>SelfHarm_Masochist</randomMentalState>
        <mentalBreakInspirationGainSet>
          <li>Frenzy_Shoot</li>
        </mentalBreakInspirationGainSet>
        <mentalBreakInspirationGainReasonText>As the attempt failed, [PAWN_nameIndef] wants to go down in a blaze of glory.</mentalBreakInspirationGainReasonText>
        <randomMentalStateMtbDaysMoodCurve>
          <points>
            <li>(0, 100)</li>
          </points>
        </randomMentalStateMtbDaysMoodCurve>
        <statFactors>
			<MeleeDamageFactor>0.5</MeleeDamageFactor>
			<IncomingDamageFactor>1.15</IncomingDamageFactor>
        </statFactors>
        <statOffsets>
			<AimingDelayFactor>-0.5</AimingDelayFactor>
        </statOffsets>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>GWT_Shut_in</li>
      <li>GWT_Morbid</li>
      <li>GWT_DeadendNerves</li>
      <li>GWT_Oblivious</li>
      <li>GWT_Benevolent</li>
      <li>GWT_Ennui</li>
      <li>GWT_Malchemist</li>
      <li>GWT_Frangofilia</li>
      <li>GWT_GloomDweller</li>
      <li>GWT_Torpid</li>
      <li>GWT_AnimalLover</li>
      <li>GWT_Spiteful</li>
      <li>GWT_Misotherist</li>
      <li>GWT_SociallyNumb</li>
      <li>GWT_FoodApathy</li>
      <!-- <li>GWT_Simple</li> -->
      <!-- <li>GWT_ColdResistant</li> -->
      <!-- <li>GWT_HeatResistant</li> -->
    </conflictingTraits>
  </TraitDef>
  
  <TraitDef MayRequire="Mlie.MoreMentalBreaks">
    <defName>GWT_Avoider</defName>
    <commonality>1</commonality>
    <degreeDatas>
      <li>
        <label>death wish</label>
        <description>{PAWN_nameDef} does not care how many are in the colony, as long as they are left alone.</description>
        <theOnlyAllowedMentalBreaks>
          <li>Antisocial</li>
        </theOnlyAllowedMentalBreaks>
        <randomMentalStateMtbDaysMoodCurve>
          <points>
            <li>(0, 100)</li>
          </points>
        </randomMentalStateMtbDaysMoodCurve>
        <statFactors>
          <CarryingCapacity>1.25</CarryingCapacity>
          <MoveSpeed>1.05</MoveSpeed>
        </statFactors>
        <statOffsets>
        </statOffsets>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>GWT_Shut_in</li>
      <li>GWT_Morbid</li>
      <li>GWT_DeadendNerves</li>
      <li>GWT_Oblivious</li>
      <li>GWT_Benevolent</li>
      <li>GWT_Ennui</li>
      <li>GWT_Malchemist</li>
      <li>GWT_Frangofilia</li>
      <li>GWT_GloomDweller</li>
      <li>GWT_Torpid</li>
      <li>GWT_AnimalLover</li>
      <li>GWT_Spiteful</li>
      <li>GWT_Misotherist</li>
      <li>GWT_SociallyNumb</li>
      <li>GWT_FoodApathy</li>
      <!-- <li>GWT_Simple</li> -->
      <!-- <li>GWT_ColdResistant</li> -->
      <!-- <li>GWT_HeatResistant</li> -->
    </conflictingTraits>
  </TraitDef>
</Defs>