<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- FLoors -->
  <DesignatorDropdownGroupDef>
    <defName>DSP_Floor_Arrakis_Tile</defName>
    <label>Arrakis tile</label>
  </DesignatorDropdownGroupDef>

  <TerrainDef ParentName="FloorBase">
    <defName>DSP_Boards_Arrakis</defName>
    <label>Arrakis boards</label>
    <description>Fine wood boards decorated in a Arrakis style.</description>
    <texturePath>Terrain/Surfaces/DSP_ArrakisWood</texturePath>
    <renderPrecedence>250</renderPrecedence>
    <canGenerateDefaultDesignator>false</canGenerateDefaultDesignator>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <dominantStyleCategory>DSP_Dune_StylePack</dominantStyleCategory>
    <color>(133,97,67)</color>
    <costList>
      <WoodLog>20</WoodLog>
    </costList>
    <isPaintable>true</isPaintable>
    <statBases>
      <WorkToBuild>5000</WorkToBuild>
      <Beauty>3</Beauty>
      <StyleDominance>1</StyleDominance>
      <Flammability>0.22</Flammability>
    </statBases>
    <tags>
      <li>FineFloor</li>
    </tags>
  </TerrainDef>

  <TerrainDef ParentName="IdeoStoneTileBase" Name="DSP_Stone_Arrakis_Tile" Abstract="True">
    <description>Fine stone tiles in a Arrakis style.</description>
    <texturePath>Terrain/Surfaces/DSP_ArrakisHex</texturePath>
    <designatorDropdown>DSP_Floor_Arrakis_Tile</designatorDropdown>
    <dominantStyleCategory>DSP_Dune_StylePack</dominantStyleCategory>
  </TerrainDef>

  <TerrainDef ParentName="DSP_Stone_Arrakis_Tile">
    <defName>DSP_Tile_ArrakisSandstone</defName>
    <label>Arrakis sandstone tile</label>
    <color>(147,127,118)</color>
    <costList>
      <BlocksSandstone>20</BlocksSandstone>
    </costList>
  </TerrainDef>

  <TerrainDef ParentName="DSP_Stone_Arrakis_Tile">
    <defName>DSP_Tile_ArrakisGranite</defName>
    <label>Arrakis granite tile</label>
    <color>(105,95,97)</color>
    <costList>
      <BlocksGranite>20</BlocksGranite>
    </costList>
  </TerrainDef>

  <TerrainDef ParentName="DSP_Stone_Arrakis_Tile">
    <defName>DSP_Tile_ArrakisLimestone</defName>
    <label>Arrakis limestone tile</label>
    <color>(158,153,135)</color>
    <costList>
      <BlocksLimestone>20</BlocksLimestone>
    </costList>
  </TerrainDef>

  <TerrainDef ParentName="DSP_Stone_Arrakis_Tile">
    <defName>DSP_Tile_ArrakisSlate</defName>
    <label>Arrakis slate tile</label>
    <color>(70,70,70)</color>
    <costList>
      <BlocksSlate>20</BlocksSlate>
    </costList>
  </TerrainDef>

  <TerrainDef ParentName="DSP_Stone_Arrakis_Tile">
    <defName>DSP_Tile_ArrakisMarble</defName>
    <label>Arrakis marble tile</label>
    <color>(180,180,180)</color>
    <costList>
      <BlocksMarble>20</BlocksMarble>
    </costList>
  </TerrainDef>

</Defs>