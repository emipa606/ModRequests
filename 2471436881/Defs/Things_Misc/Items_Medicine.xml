<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="MedicineBase">
    <defName>Bandages</defName>
    <label>bandages</label>
    <description>Simple cloth bandages. They are very light and can be applied quite fast but they are not very effective. Perfect for caravans.</description>
    <graphicData>
      <texPath>Things/Meds/Bandages</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>1.70</drawSize>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <MarketValue>1</MarketValue>
      <Mass>0.05</Mass>
      <Flammability>0.7</Flammability>
      <MedicalPotency>0.40</MedicalPotency>
      <MedicalQualityMax>0.65</MedicalQualityMax>
      <MedicalTendSpeed>0.65</MedicalTendSpeed>
      <DeteriorationRate>2</DeteriorationRate>
      <WorkToMake>120</WorkToMake>
    </statBases>
    <costList>
      <Cloth>10</Cloth>
    </costList>
    <recipeMaker>
     <productCount>2</productCount>
      <recipeUsers>
        <li>DrugLab</li>
        <li>CraftingSpot</li>
      </recipeUsers>      
    </recipeMaker>
   <tradeTags Inherit="False"/>
  </ThingDef>

<ThingDef ParentName="MedicineBase">
    <defName>SutureKit</defName>
    <label>suture kit</label>
    <description>A kit of non-toxic strands, needles, band-aids and scissors. They are light and can be applied quite fast but they are not very effective. Perfect for caravans.</description>
    <graphicData>
      <texPath>Things/Meds/SutureKit</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.95</drawSize>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MarketValue>14</MarketValue>
      <Mass>0.20</Mass>
      <Flammability>0.7</Flammability>
      <MedicalPotency>0.70</MedicalPotency>
      <MedicalQualityMax>0.80</MedicalQualityMax>
      <MedicalTendSpeed>0.50</MedicalTendSpeed>
      <DeteriorationRate>2</DeteriorationRate>
      <WorkToMake>300</WorkToMake>
    </statBases>
    <costList>
      <Cloth>10</Cloth>
      <Steel>3</Steel>
      <Neutroamine>1</Neutroamine>
    </costList>
    <recipeMaker>
     <productCount>2</productCount>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
     <researchPrerequisite>MedicineProduction</researchPrerequisite>
     <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>     
      <skillRequirements>
        <Crafting>4</Crafting>
        <Intellectual>2</Intellectual>        
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

<ThingDef ParentName="MedicineBase">
    <defName>MedicineSpacer</defName>
    <label>spacer medicine</label>
    <description>A box of advanced midworld medicine. This particular kit was used by the first space marines, exploring the seemingly endless universe.</description>
    <graphicData>
      <texPath>Things/Meds/SpacerMedicine</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>1.05</drawSize>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <statBases>
      <MarketValue>35</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>0.7</Flammability>
      <MedicalPotency>1.25</MedicalPotency>
      <MedicalQualityMax>1.15</MedicalQualityMax>
      <DeteriorationRate>2</DeteriorationRate>
      <WorkToMake>840</WorkToMake>
    </statBases>
    <costList>
      <Synthread>5</Synthread>
      <Silver>10</Silver>
      <MedicineIndustrial>1</MedicineIndustrial>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
     <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>     
      <skillRequirements>
        <Crafting>6</Crafting>
        <Intellectual>6</Intellectual>        
      </skillRequirements>
    </recipeMaker>
   </ThingDef>

</Defs>