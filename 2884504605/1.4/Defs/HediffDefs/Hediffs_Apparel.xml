<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
        <defName>TRAHS_Eyefold</defName>
        <label>eyefold</label>
        <description>An eyefold is covering the wearer's eyes, leaving them blind.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
          <li>
            <capMods>
              <li>
                <capacity>Sight</capacity>
                <setMax>0.0</setMax>
              </li>
            </capMods>
          </li>
        </stages>
        <comps>
          <li Class="HediffCompProperties_RemoveIfApparelDropped" />
        </comps>
        <isBad>false</isBad>
      </HediffDef>

      <HediffDef>
        <defName>TRAHS_Mouthfold</defName>
        <label>mouthfold</label>
        <description>A mouthfold is covering the wearer's mouth, leaving them incapable of speech and hindered eating ability.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
          <li>
            <capMods>
              <li>
                <capacity>Talking</capacity>
                <setMax>0.0</setMax>
              </li>
              <li>
                <capacity>Eating</capacity>
                <setMax>0.3</setMax>
              </li>
            </capMods>
          </li>
        </stages>
        <comps>
          <li Class="HediffCompProperties_RemoveIfApparelDropped" />
        </comps>
        <isBad>false</isBad>
      </HediffDef>

      <HediffDef>
        <defName>TRAHS_Earplugs</defName>
        <label>earplugs</label>
        <description>Some earplugs are placed firmly within the wearer's ears, leaving them almost completely deaf.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
          <li>
            <capMods>
              <li>
                <capacity>Hearing</capacity>
                <setMax>0.1</setMax>
              </li>
            </capMods>
          </li>
        </stages>
        <comps>
          <li Class="HediffCompProperties_RemoveIfApparelDropped" />
        </comps>
        <isBad>false</isBad>
      </HediffDef>

      <HediffDef>
        <defName>TRAHS_FullHeadCovering</defName>
        <label>head covering</label>
        <description>A head covering is tightly fastened around the wearer, completely removing their ability to speak and see, and minorly affecting their ability to breath, eat and hear.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
          <li>
            <capMods>
              <li>
                <capacity>Talking</capacity>
                <setMax>0.0</setMax>
              </li>
              <li>
                <capacity>Eating</capacity>
                <setMax>0.3</setMax>
              </li>
              <li>
                <capacity>Breathing</capacity>
                <setMax>0.5</setMax>
              </li>
              <li>
                <capacity>Sight</capacity>
                <setMax>0.0</setMax>
              </li>
              <li>
                <capacity>Hearing</capacity>
                <setMax>0.1</setMax>
              </li>
            </capMods>
          </li>
        </stages>
        <comps>
          <li Class="HediffCompProperties_RemoveIfApparelDropped" />
        </comps>
        <isBad>false</isBad>
      </HediffDef>

      <HediffDef>
        <defName>TRAHS_LegBinding</defName>
        <label>leg binding</label>
        <description>The legs of the wearer are bound together, unable to move.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
          <li>
            <capMods>
              <li>
                <capacity>Moving</capacity>
                <setMax>0.0</setMax>
              </li>
            </capMods>
          </li>
        </stages>
        <comps>
          <li Class="HediffCompProperties_RemoveIfApparelDropped" />
        </comps>
        <isBad>false</isBad>
      </HediffDef>

      <HediffDef>
        <defName>TRAHS_ArmBinding</defName>
        <label>arm binding</label>
        <description>The arms of the wearer are bound together, unable to move.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
          <li>
            <capMods>
              <li>
                <capacity>Manipulation</capacity>
                <setMax>0.0</setMax>
              </li>
            </capMods>
          </li>
        </stages>
        <comps>
          <li Class="HediffCompProperties_RemoveIfApparelDropped" />
        </comps>
        <isBad>false</isBad>
      </HediffDef>

</Defs>