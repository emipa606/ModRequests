<Defs> 

	<!-- Tuurngait -->

	<ThoughtDef>
		<defName>BlackPlague_TuurngaitHivemindThought</defName>
		<thoughtClass>Mashed_BlackPlague.Thought_Situational_TuurngaitInColony</thoughtClass>
		<workerClass>Mashed_BlackPlague.ThoughtWorker_Situational_TuurngaitInColony</workerClass>
		<doNotApplyToQuestLodgers>true</doNotApplyToQuestLodgers>
		<stages>
		  <li>
			<label>Tuurngait hivemind</label>
			<description>There cannot be one, there can only be us all.</description>
			<baseMoodEffect>10</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>BlackPlague_TuurngaitOpinion</defName>
		<thoughtClass>Thought_SituationalSocial</thoughtClass>
		<workerClass>Mashed_BlackPlague.ThoughtWorker_TuurngaitOpinionThought</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
		  <li>
			<label>Tuurngait</label>
			<baseOpinionOffset>-50</baseOpinionOffset>
		  </li>
		  <li>
			<label>They are not part of us</label>
			<baseOpinionOffset>-50</baseOpinionOffset>
		  </li>
		  <li>
			<label>We are all</label>
			<baseOpinionOffset>100</baseOpinionOffset>
		  </li>
		  <li>
			<label>Soon they we will be part of us</label>
			<baseOpinionOffset>25</baseOpinionOffset>
		  </li>
		</stages>
	</ThoughtDef>
	
