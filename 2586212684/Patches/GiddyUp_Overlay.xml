<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Giddy-up! Core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

	            <li Class="PatchOperationRemove">
		            <xpath>Defs/ThingDef[defName = "Horse"]/comps/li[@Class = "GiddyUpCore.CompProperties_Overlay"]</xpath>
	            </li>

                <li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Horse"]/comps</xpath>
					<value>
						<li Class="GiddyUpCore.CompProperties_Overlay">
							<overlayFront>
								<graphicDataDefault>
									<graphicClass>Graphic_Single</graphicClass>
									<drawSize>2.1</drawSize>
									<drawRotated>false</drawRotated>
								</graphicDataDefault>
								<allVariants>
									<li>
										<texPath>Things/Pawn/Animal/Apparel/Overlay/Horse_overlay_south</texPath>
									</li>
									<li>
										<texPath>Things/Pawn/Animal/Apparel/Overlay/Horse1_overlay_south</texPath>
									</li>							
									<li>
										<texPath>Things/Pawn/Animal/Apparel/Overlay/Horse2_overlay_south</texPath>
									</li>							
									<li>
										<texPath>Things/Pawn/Animal/Apparel/Overlay/Horse3_overlay_south</texPath>
									</li>							
									<li>
										<texPath>Things/Pawn/Animal/Apparel/Overlay/Horse4_overlay_south</texPath>
									</li>							
									<li>
										<texPath>Things/Pawn/Animal/Apparel/Overlay/Horse5_overlay_south</texPath>
									</li>						
									<li>
										<texPath>Things/Pawn/Animal/Apparel/Overlay/Horse6_overlay_south</texPath>
									</li>
								</allVariants>
								<offsetDefault>(0,0,0,0)</offsetDefault>
							</overlayFront>
						</li>
					</value>
				</li>

            </operations>   
        </match>
    </Operation>
</Patch>