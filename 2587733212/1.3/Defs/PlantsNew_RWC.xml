<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Geranium -->

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantGeranium</defName>
		<label>geranium</label>
		<description>A beautiful flower. Great for decorating a drab yard!</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>18</Beauty>
			<Nutrition>0.05</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Geranium</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible />
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<sowWork>800</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags>
			<growMinGlow>0.3</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>1.5</growDays>
			<lifespanDaysPerGrowDays>3</lifespanDaysPerGrowDays>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.05</max>
			</visualSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
			<wildBiomes>
				<AridShrubland>0.01</AridShrubland>
				<BorealForest>0.1</BorealForest>
				<Desert>0.01</Desert>
				<ExtremeDesert>0.001</ExtremeDesert>
				<TemperateForest>0.05</TemperateForest>
				<TropicalRainforest>0.02</TropicalRainforest>
				<Tundra>0.01</Tundra>
				<ColdBog>0.001</ColdBog>
				<TemperateSwamp>0.001</TemperateSwamp>
				<TropicalSwamp>0.001</TropicalSwamp>
			</wildBiomes>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>

</Defs>
