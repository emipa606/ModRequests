<?xml version="1.0" encoding="utf-8" ?>
<!-- Tinctoria -->
<Defs>
	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantWild_Tinctoria</defName>
		<label>wild tinctoria</label>
		<description>A genetically-engineered flower-like crop which secretes a self-altering dye found growing in the wild. Tinctoria dye can be coaxed into different colors and used to dye apparel.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Nutrition>0.1</Nutrition>
			<Beauty>1</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Tinctoria</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible/>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<growDays>3</growDays>
			<growMinGlow>0.3</growMinGlow>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>Dye</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.05</max>
			</visualSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
			<wildBiomes>
				<AridShrubland>0.05</AridShrubland>
				<BorealForest>0.03</BorealForest>
				<Desert>0.01</Desert>
				<ExtremeDesert>0.001</ExtremeDesert>
				<TemperateForest>.03</TemperateForest> <!-- .03 -->
				<TropicalRainforest>0.001</TropicalRainforest>
				<Tundra>0.001</Tundra>
				<ColdBog>0.001</ColdBog>
				<TemperateSwamp>0.001</TemperateSwamp>
				<TropicalSwamp>0.001</TropicalSwamp>
			</wildBiomes>
			<wildOrder>2</wildOrder>
		</plant>
	</ThingDef>
</Defs>