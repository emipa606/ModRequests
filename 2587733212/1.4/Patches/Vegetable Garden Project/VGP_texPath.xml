<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Replace wild plant textures with VGP Vegetable Garden
	
	Plants added by Wild Cultivation:
	- PlantWildCorn (wild corn plant)*
	- PlantWildCotton (wild cotton plant)*
	- PlantWildDaylily (daylily)*
	- PlantWildDevilstrand (wild devilstrand)*
	- PlantWildHops (wild hop plant)*
	- PlantWildPotato (wild potato plant)*
	- PlantWildRice (wild rice plant)*
	- PlantWildRose (wild rose)*
	
	- PlantWildHaygrass (haygrass)
	- PlantWildPsychoid (wild psychoid plant)
	- PlantWildSmokeleaf (wild smokeleaf plant)
	
	*texture change by VGP Vegetable Garden

	Note: some plants do not have an immatureGraphicPath already, so ensure
	you correctly add or replace
	
	-->

	<!-- Change main texPath -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Corn -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "PlantWildCorn"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Plants/CornPlant</texPath>
					</value>
				</li>
				
				<!-- Cotton -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "PlantWildCotton"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Plants/CottonPlant</texPath>
					</value>
				</li>			
				
				<!-- Daylily -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "PlantWildDaylily"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Plants/Daylily</texPath>
					</value>
				</li>
				
				<!-- Devilstrand -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "PlantWildDevilstrand"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Plants/Devilstrand</texPath>
					</value>
				</li>

				<!-- Hops -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "PlantWildHops"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Plants/HopsPlant</texPath>
					</value>
				</li>
				
				<!-- Potato -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "PlantWildPotato"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Plants/PotatoPlant</texPath>
					</value>
				</li>

				<!-- Rice -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "PlantWildRice"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Plants/RicePlant</texPath>
					</value>
				</li>
				
				<!-- Rose -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "PlantWildRose"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Plants/Rose</texPath>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
</Patch>
