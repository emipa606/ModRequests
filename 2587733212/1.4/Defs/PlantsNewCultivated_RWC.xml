<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Astragalus -->

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedAstragalus</defName>
		<label>astragalus</label>
		<description>A small perennial wildflower that grows in alpine climates.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<Nutrition>0.18</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Astragalus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<altitudeLayer>Item</altitudeLayer>
		<ingestible />
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags> 
			<maxMeshCount>25</maxMeshCount>
			<visualSizeRange>
				<min>0.3</min>
				<max>0.4</max>
			</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildOrder>1</wildOrder>
		</plant>
	</ThingDef>

	<!-- Brambles -->

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedBrambles</defName>
		<label>brambles</label>
		<description>Tangled, thorny, woody shoots covered with leaves. Brambles grow in clusters, and slow down anyone moving over them.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Nutrition>0.20</Nutrition>
		</statBases>
		<pathCost>30</pathCost>
		<graphicData>
			<texPath>Things/Plant/Brambles</texPath>
			<drawSize>1.7</drawSize>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<ingestible />
		<plant>
			<fertilitySensitivity>0.7</fertilitySensitivity>
			<growDays>3</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags> 
			<harvestWork>60</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<leaflessGraphicPath>Things/Plant/Brambles_Leafless</leaflessGraphicPath>
			<visualSizeRange>
				<min>0.7</min>
				<max>0.85</max>
			</visualSizeRange>
			<topWindExposure>0.15</topWindExposure>
			<wildOrder>1</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
		</plant>
	</ThingDef>

	<!-- Bush -->

	<ThingDef ParentName="RWC_BushBase">
		<defName>PlantCultivatedBush</defName>
		<label>bush</label>
		<description>A short shrub. Does not typically talk.</description>
		<graphicData>
			<texPath>Things/Plant/Bush</texPath>
			<drawSize>1.15</drawSize>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<plant>
			<growDays>3</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags> 
			<leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath>
		</plant>
	</ThingDef>
	
	<!-- Clivia -->
	
	<ThingDef ParentName="RWC_BushBase">
		<defName>PlantCultivatedClivia</defName>
		<label>clivia</label>
		<description>An unusual plant with tall, pretty flowers. Some call it the 'bush lily'.</description>
		<statBases>
			<Beauty>2</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Clivia</texPath>
			<drawSize>1.1</drawSize>
			<shadowData>
				<volume>(0.3, 0.2, 0.15)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<plant>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags> 
		</plant>
	</ThingDef>

	<!-- Low shrubs -->

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedShrubLow</defName>
		<label>low shrubs</label>
		<description>Various low broadleaf shrubs. These grow in clusters and slow down movement.</description>
		<statBases>
			<MaxHitPoints>90</MaxHitPoints>
			<Nutrition>0.20</Nutrition>
		</statBases>
		<pathCost>20</pathCost>
		<graphicData>
			<texPath>Things/Plant/ShrubLow</texPath>
		</graphicData>
		<selectable>true</selectable>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible />
		<plant>
			<fertilitySensitivity>0.7</fertilitySensitivity>
			<growDays>3</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags> 
			<harvestWork>60</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>
				<min>0.85</min>
				<max>1.05</max>
			</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildOrder>1</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
		</plant>
	</ThingDef>
	
	<!-- Pincushion cactus -->
	
	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedPincushionCactus</defName>
		<label>pincushion cactus</label>
		<description>A short cactus. It is so named because it resembles a pincushion.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Beauty>1</Beauty>
			<Nutrition>0.25</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/PincushionCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>30</pathCost>
		<hideAtSnowDepth>1</hideAtSnowDepth>
		<altitudeLayer>Item</altitudeLayer>
		<ingestible />
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowMinSkill>4</sowMinSkill>
			<sowTags>
				<!-- Ground sowtag added in patch for VGP compatibility -->
				<li>Decorative</li>
			</sowTags> 
			<visualSizeRange>
				<min>0.40</min>
				<max>0.65</max>
			</visualSizeRange>
			<topWindExposure>0.0</topWindExposure>
			<maxMeshCount>4</maxMeshCount>
			<wildOrder>2</wildOrder>
		</plant>
	</ThingDef>
	
	<!-- Saguaro cactus -->

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedSaguaroCactus</defName>
		<label>saguaro cactus</label>
		<description>A large cactus native to arid Earth environments. Though it is not a tree, it yields a small amount of fibrous material that can be used like wood.</description>
		<statBases>
			<MaxHitPoints>130</MaxHitPoints>
			<Flammability>0.8</Flammability>
			<Nutrition>1.50</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/SaguaroCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.24, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<selectable>true</selectable>
		<fillPercent>0.35</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>130</pathCost>
		<blockWind>true</blockWind>
		<ingestible>
			<foodType>Tree</foodType>
			<preferability>RawBad</preferability>
		</ingestible>
		<plant>
			<lifespanDaysPerGrowDays>40</lifespanDaysPerGrowDays>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>10</growDays>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<leaflessGraphicPath>Things/Plant/SaguaroCactus_Leafless</leaflessGraphicPath>
			<harvestWork>600</harvestWork>
			<harvestedThingDef>WoodLog</harvestedThingDef>
			<harvestTag>Wood</harvestTag>
			<harvestYield>5</harvestYield>
			<harvestMinGrowth>0.2</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<blockAdjacentSow>true</blockAdjacentSow>
			<visualSizeRange>
				<min>1.3</min>
				<max>2.0</max>
			</visualSizeRange>
			<topWindExposure>0.08</topWindExposure>
			<wildOrder>3</wildOrder>
			<interferesWithRoof>true</interferesWithRoof>
		</plant>
	</ThingDef>
	
	<!-- Actual seed defs used if "Seeds Please!" is installed -->

	<!-- Agave seeds -->

	<SeedsPlease.SeedDef ParentName="RWC_SeedBase">
		<defName>Seed_Agave</defName>
		<label>agave seeds</label>
		<sources>
			<li>Plant_Agave</li>
		</sources>
	</SeedsPlease.SeedDef>
	
	<!-- Bramble seeds -->
	
	<SeedsPlease.SeedDef ParentName="RWC_SeedBase">
		<defName>SeedBrambles</defName>
		<label>bramble seeds</label>
		<sources>
			<li>PlantCultivatedBrambles</li>
			<li>Plant_Brambles</li>
		</sources>
		<statBases>
			<MarketValue>6.0</MarketValue>
		</statBases>
	</SeedsPlease.SeedDef>

	<!-- Clivia seeds -->

	<SeedsPlease.SeedDef ParentName="RWC_SeedBase">
		<defName>SeedClivia</defName>
		<label>clivia seeds</label>
		<sources>
			<li>PlantCultivatedClivia</li>
			<li>Plant_Clivia</li>
		</sources>
		<statBases>
			<MarketValue>3.0</MarketValue>
		</statBases>
	</SeedsPlease.SeedDef>

	<!-- Saguaro seeds -->

	<SeedsPlease.SeedDef ParentName="RWC_SeedBase">
		<defName>SeedSaguaro</defName>
		<label>saguaro cactus seeds</label>
		<statBases>
			<MarketValue>12.0</MarketValue>
		</statBases>
		<sources>
			<li>PlantCultivatedSaguaroCactus</li>
			<li>Plant_SaguaroCactus</li>
		</sources>
	</SeedsPlease.SeedDef>

	<SeedsPlease.SeedDef Name="RWC_SeedBase" ParentName="RWC_ResourceBase" Abstract="True">
		<thingClass>SeedsPlease.Seed</thingClass>
		<label>unspecified seed</label>
		<description>These are genetically engineered seeds capable of thriving in a wide range of alien environments over multiple generations.</description>
		<graphicData>
			<texPath>Things/Item/Seeds/Seeds</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>15</MaxHitPoints>
			<Mass>0.015</Mass>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<MarketValue>0</MarketValue>
			<SellPriceFactor>0.01</SellPriceFactor>
		</statBases>
		<soundInteract>Grain_Drop</soundInteract>
		<soundDrop>Grain_Drop</soundDrop>
		<thingCategories>
			<li>SeedsCategory</li>
		</thingCategories>
		<tradeTags>
			<li>Seeds</li>
		</tradeTags>
		<seed>
			<harvestFactor>1.0</harvestFactor>
			<seedFactor>1.0</seedFactor>
			<baseChance>0.95</baseChance>
			<extraChance>0.15</extraChance>
		</seed>
		<stackLimit>500</stackLimit>
	</SeedsPlease.SeedDef>

	<ThingDef Name="RWC_ResourceBase" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>75</stackLimit>
		<statBases>
			<Beauty>-7</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
	</ThingDef>

</Defs>
