<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<GeneDef ParentName="GeneEarsBase">
		<defName>BDWG_Ears_Wolf</defName>
		<label>wolf ears</label>
		<description>Carriers of this gene will grow fluffy pointed wolf-like ears.</description>
		<iconPath>UI/Icons/Genes/Gene_EarWolf</iconPath>
		<graphicData>
			<graphicPath>Things/Pawn/Humanlike/HeadAttachments/WolfEars/WolfEar</graphicPath>
			<colorType>Hair</colorType>
			<useSkinShader>false</useSkinShader>
		</graphicData>
	</GeneDef>

	<GeneDef ParentName="GeneTailBase">
		<defName>BDWG_Tail_Wolf</defName>
		<label>wolf tail</label>
		<description>Carriers of this gene grow a fluffy wolfy tail which helps agility.</description>
		<iconPath>UI/Icons/Genes/Gene_TailWolf</iconPath>
		<displayOrderInCategory>1000</displayOrderInCategory>
		<statOffsets>
			<MoveSpeed>0.1</MoveSpeed>
			<MeleeHitChance>0.1</MeleeHitChance>
			<MeleeDodgeChance>0.1</MeleeDodgeChance>
		</statOffsets>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<graphicData>
			<graphicPath>Things/Pawn/Humanlike/BodyAttachments/WolfTail/WolfTail</graphicPath>
			<colorType>Hair</colorType>
			<drawOffsetNorth>(0.0, 0.2, -0.25)</drawOffsetNorth>
			<drawOffsetSouth>(0.3, -0.1, -0.25)</drawOffsetSouth>
			<drawOffsetEast>(-0.5, -0.1, -0.2)</drawOffsetEast>
		</graphicData>
	</GeneDef>

	<GeneDef>
		<defName>BDWG_Fluff_Wolf</defName>
		<label>body fluff</label>
		<labelShortAdj>furskinned</labelShortAdj>
		<description>Carriers of this gene grow thick fur on part of their body, which protects them from cold temperatures.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>0</biostatMet>
		<displayCategory>Miscellaneous</displayCategory>
		<displayOrderInCategory>400</displayOrderInCategory>
		<iconPath>UI/Icons/Genes/Gene_BodyFluffWolf</iconPath>
		<exclusionTags>
			<li>Fur</li>
		</exclusionTags>
		<statOffsets>
			<ComfyTemperatureMin>-5</ComfyTemperatureMin>
		</statOffsets>
		<graphicData>
			<fur>BDWG_Fluff_Wolf</fur>
			<colorType>Hair</colorType>
			<skinIsHairColor>false</skinIsHairColor>
			<tattoosVisible>true</tattoosVisible>
		</graphicData>
	</GeneDef>

	<FurDef>
		<defName>BDWG_Fluff_Wolf</defName>
		<noGraphic>true</noGraphic>
		<bodyTypeGraphicPaths>
			<Male>Things/Pawn/Humanlike/Bodies/WolfGirlFluff/Fluff_Male</Male>
			<Female>Things/Pawn/Humanlike/Bodies/WolfGirlFluff/Fluff_Female</Female>
			<Hulk>Things/Pawn/Humanlike/Bodies/WolfGirlFluff/Fluff_Hulk</Hulk>
			<Fat>Things/Pawn/Humanlike/Bodies/WolfGirlFluff/Fluff_Fat</Fat>
			<Thin>Things/Pawn/Humanlike/Bodies/WolfGirlFluff/Fluff_Thin</Thin>
			<Child>Things/Pawn/Humanlike/Bodies/WolfGirlFluff/Fluff_Child</Child>
			<Baby>Things/Pawn/Humanlike/Bodies/WolfGirlFluff/Fluff_Child</Baby>
		</bodyTypeGraphicPaths>
	</FurDef>
</Defs>