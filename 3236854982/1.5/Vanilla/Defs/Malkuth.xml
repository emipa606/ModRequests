<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="BinahApparelBase">
		<defName>MalkuthLibrarian</defName>
		<label>librarian outfit</label>
		<description>Outfit for the Patron Librarian of the Floor of History.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Malkuth/Malkuth_icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<MarketValue>6000</MarketValue>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>2</Mass>
			<ArmorRating_Sharp>0.74</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.46</ArmorRating_Blunt>
			<ArmorRating_Heat>0.8</ArmorRating_Heat>
			<Insulation_Cold>16</Insulation_Cold>
			<Insulation_Heat>16</Insulation_Heat>
			<Flammability>0</Flammability>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<IncomingDamageFactor>-0.9</IncomingDamageFactor>
			<PsychicSensitivityOffset>0.5</PsychicSensitivityOffset>
			<PsychicEntropyRecoveryRate>0.2</PsychicEntropyRecoveryRate>
			<Flammability>-1</Flammability>
			<SocialImpact>0.20</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<shellRenderedBehindHead>true</shellRenderedBehindHead>
			<tags>
				<li>PrestigeCombatGear</li>
			</tags>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Hands</li>
				<li>Legs</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Malkuth/Malkuth</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

	<ThingDef ParentName="ApparelNoQualityBase">
		<defName>MalkuthHairstyle</defName>
		<label>Malkuth Wig</label>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Malkuth/Malkuth_helmeticon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.9, 0.9)</drawSize>
		</graphicData>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<WorkToMake>600</WorkToMake>
			<MaxHitPoints>1000</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>1.2</DeteriorationRate>
			<Mass>0</Mass>
			<MarketValue>0</MarketValue>
		</statBases>
		<costList>
			<Chemfuel>5</Chemfuel>
			<Dye>1</Dye>
		</costList>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>
		<smeltable>false</smeltable>
		<apparel>
			<drawData>
				<dataNorth>
					<layer>100</layer>
				</dataNorth>
			</drawData>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Malkuth/Malkuth_helmet</wornGraphicPath>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>false</useDeflectMetalEffect>
		</apparel>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedMask</unfinishedThingDef>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<comps Inherit="False">
			<li Class="CompProperties_Forbiddable"/>
		</comps>
	</ThingDef>

	<HairDef>
		<label>Malkuth</label>
		<styleGender>Female</styleGender>
