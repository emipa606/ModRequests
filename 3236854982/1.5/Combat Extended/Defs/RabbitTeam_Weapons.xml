<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_RabbitTeam_Red</defName>
		<label>Rabbit Team Assault Weapon</label>
		<description>A high caliber automatic assault weapon known for its lethality.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/AssaultWeapon_Red</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.2</drawSize>
		</graphicData>
		<soundInteract>RabbitTeamGun_Interact</soundInteract>
		<recipeMaker>
			<researchPrerequisites>
				<li>GasOperation</li>
				<li>Fabrication</li>
			</researchPrerequisites>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<statBases>
			<Bulk>5</Bulk>
			<Mass>4.95</Mass>
			<SwayFactor>1.22</SwayFactor>
			<ShotSpread>0.13</ShotSpread>
			<SightsEfficiency>1.00</SightsEfficiency>
			<RangedWeapon_Cooldown>0.43</RangedWeapon_Cooldown>
			<WorkToMake>30000</WorkToMake>
		</statBases>
		<costList>
			<Steel>50</Steel>
			<Plasteel>50</Plasteel>
			<ComponentIndustrial>6</ComponentIndustrial>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>
		<weaponTags Inherit="False">
			<li>RabbitTeamGun</li>
		</weaponTags>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>3.9</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_50BMG_FMJ</defaultProjectile>
				<burstShotCount>4</burstShotCount>
				<ticksBetweenBurstShots>13</ticksBetweenBurstShots>
				<warmupTime>1.1</warmupTime>
				<range>55</range>
				<soundCast>RabbitTeamGun_Fire</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>30</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>20</magazineSize>
				<reloadTime>4</reloadTime>
				<ammoSet>AmmoSet_50BMG</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiUseBurstMode>FALSE</aiUseBurstMode>
				<aiAimMode>AimedShot</aiAimMode>
				<aimedBurstShotCount>2</aimedBurstShotCount>
			</li>
		</comps>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.79</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
			</li>
		</tools>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawOffset>0.1,0.00</DrawOffset>
				<muzzleJumpModifier>0.25</muzzleJumpModifier>
			</li>
		</modExtensions>
	</ThingDef>



