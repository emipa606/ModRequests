		<statBases>
			<WorkToMake>12000</WorkToMake>
			<Mass>0.65</Mass>
		</statBases>
		<costList>
			<Steel>25</Steel>
			<Plasteel>50</Plasteel>
			<ComponentIndustrial>4</ComponentIndustrial>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<weaponTags Inherit="False">
			<li>RabbitTeamKnife</li>
