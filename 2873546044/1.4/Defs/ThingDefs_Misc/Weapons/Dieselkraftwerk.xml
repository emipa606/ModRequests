<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_Dieselkraftwerk</defName>
    <label>Dieselkraftwerk</label>
    <description>The Dieselkraftwerk incendiary launcher designed by Set Roth.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Dieselkraftwerk</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>0.3</generateCommonality>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>3.4</Mass>
      <RangedWeapon_Cooldown>3.1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>475</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <recipeMaker>
	  <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Dieselkraftwerk</defaultProjectile>
        <warmupTime>3.8</warmupTime>
        <range>35.1</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <burstShotCount>3</burstShotCount>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>26</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Dieselkraftwerk</defName>
    <label>incendiary bolt</label>
    <graphicData>
      <texPath>Things/Projectile/LauncherShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(245,152,66)</color>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>45</speed>
      <damageDef>Flame</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionRadius>2.1</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.9</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <arcHeightFactor>0.2</arcHeightFactor>
      <shadowSize>0.6</shadowSize>
    </projectile>
  </ThingDef>

</Defs>