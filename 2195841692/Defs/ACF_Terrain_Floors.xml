<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
  <TerrainDef ParentName="FloorBase">
	<defName>ACF_AutoCleanFloor</defName>
	<label>autoclean floor</label>
	<description>Automated floor equipped with a vacuum mechanism to constantly clear all filth and snow.</description>
	<texturePath>ACF_AutoCleanFloor</texturePath>
    <color>(0.71, 0.71, 0.71)</color>
	<edgeType>Hard</edgeType>
    <renderPrecedence>190</renderPrecedence>
    <researchPrerequisites><li>MicroelectronicsBasics</li></researchPrerequisites>
    <resourcesFractionWhenDeconstructed>0.3</resourcesFractionWhenDeconstructed>
	<filthAcceptanceMask>
      <li>None</li>
    </filthAcceptanceMask>
	<holdSnow>false</holdSnow>
    <costList>
	  <Silver>7</Silver>
	  <Steel>5</Steel>
	  <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <statBases>
      <Beauty>0</Beauty>
      <Flammability>0</Flammability>
      <WorkToBuild>700</WorkToBuild>
	  <Cleanliness>20</Cleanliness> <!-- Just to room stats !-->
    </statBases>
  </TerrainDef>
  
  <TerrainDef ParentName="FloorBase">
    <defName>ACF_AutoCleanCarpet</defName>
    <label>autoclean carpet</label>
    <renderPrecedence>399</renderPrecedence>
    <description>Special carpet. It's like a living organism feeding on dirt and snow. Nobody know's how works but colonists love it. Very beautiful and give speed bonus.</description>
	<edgeType>FadeRough</edgeType>
	<texturePath>ACF_AutoCleanCarpet</texturePath>
    <color>(202,202,217)</color>
    <researchPrerequisites><li>CarpetMaking</li></researchPrerequisites>
    <resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
    <filthAcceptanceMask>
      <li>None</li>
    </filthAcceptanceMask>
	<holdSnow>false</holdSnow>
    <costList>
      <Synthread>3</Synthread>
    </costList>
    <statBases>
      <Beauty>6</Beauty>
      <Flammability>0</Flammability>
      <WorkToBuild>520</WorkToBuild>
	  <Cleanliness>20</Cleanliness> <!-- Just to room stats !-->
    </statBases>
    <passability>PassThroughOnly</passability>
    <pathCost>0</pathCost>
  </TerrainDef>

</Defs>
