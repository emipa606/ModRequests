<!-- With this, archotech fragmens should drop from...stuff -->
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PsychicSuppressor"]</xpath>
					<value>
						<killedLeavings>
							<ArchotechScrap>15</ArchotechScrap>
						</killedLeavings>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Gloomlight"]/costList</xpath>
					<value>
						<ArchotechScrap>1</ArchotechScrap>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PsychicDroner"]</xpath>
					<value>
						<killedLeavings>
							<ArchotechScrap>15</ArchotechScrap>
						</killedLeavings>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="UnstablePowerCell"]</xpath>
					<value>
						<killedLeavings>
							<ArchotechScrap>1</ArchotechScrap>
						</killedLeavings>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="UnstablePowerCell"]/costList</xpath>
					<value>					
							<ArchotechScrap>5</ArchotechScrap>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[@Name="CrashedShipPartBase"]/killedLeavings</xpath>
		<value>
			<ArchotechScrap>15</ArchotechScrap>
		</value>
	</Operation>
	


	
</Patch>