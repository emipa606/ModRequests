<?xml version="1.0" encoding="utf-8" ?>

 
<Defs>

	<!-- A trait and at least one book must be defined for each custom class.
	Mage types should use the Arcane Tome example, and can define a torn script as a cheaper version that randomly assigns abilities
	Fighter types should use Martial Tome example
	Classes that support both types can use either Tome type. -->
	
	<!-- Example of Torn Script
   <ThingDef ParentName="Partial_ArcaneScriptBase">
    <defName>Torn_BookOfNAME</defName>
    <label>Torn Script: LABEL</label>
    <thingClass>ThingWithComps</thingClass>
    <description>Description of custom class torn script.</description>
	<category>Item</category>
	<selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
	<alwaysHaulable>true</alwaysHaulable>
	
	<resourceReadoutPriority>Middle</resourceReadoutPriority>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
	<comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
	<rotatable>false</rotatable>
    <graphicData>
      <texPath>Books/torn_necro</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  -->
  
  <!-- Example of Arcane Tome book for MAGE types (hybrid classes can use either)
  <ThingDef ParentName="ArcaneScriptBase">
    <defName>BookOfShadow</defName>
    <label>Arcane Tome: Shadow</label>
    <thingClass>ThingWithComps</thingClass>
    <description>In the dead of night, fear reveals itself in the blade's reflection - the shadow awakens.</description>
	<category>Item</category>
	<selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
	<alwaysHaulable>true</alwaysHaulable>	
	<resourceReadoutPriority>Middle</resourceReadoutPriority>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
	<comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
	<rotatable>false</rotatable>
    <graphicData>
      <texPath>Books/shadowbook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  -->
  
  <!-- Example of Martial Tome for FIGHTER types (hybrid classes can use either)
  <ThingDef ParentName="CombatFormBase">
    <defName>BookOfCommander</defName>
    <label>Combat Style: Commander</label>
    <thingClass>ThingWithComps</thingClass>
    <description>Teaches a physically adept pawn how to become a charismatic leader.</description>
	<category>Item</category>
	<selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
	<alwaysHaulable>true</alwaysHaulable>	
	<resourceReadoutPriority>Middle</resourceReadoutPriority>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
	<comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
	<rotatable>false</rotatable>
    <graphicData>
      <texPath>Books/commander</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  -->
    <ThingDef ParentName="ArcaneScriptBase">
	    <defName>BookOfApotheosis</defName>
	    <label>Arcane Tome: Apotheosis</label>
	    <thingClass>ThingWithComps</thingClass>
	    <description>Believed to be written by Gods and Deities-- this book contains forbidden knowledge of the universe. Its start... and end.</description>
	    <category>Item</category>
	    <selectable>true</selectable>
	    <altitudeLayer>Item</altitudeLayer>
	    <alwaysHaulable>true</alwaysHaulable>
	    <resourceReadoutPriority>Middle</resourceReadoutPriority>
	    <tradeNeverStack>true</tradeNeverStack>
	    <useHitPoints>true</useHitPoints>
	    <comps>
		    <li Class="CompProperties_Forbiddable" />
	    </comps>
	    <rotatable>false</rotatable>
	    <graphicData>
		    <texPath>Books/shadowbook</texPath>
		    <graphicClass>Graphic_Single</graphicClass>
	    </graphicData>
    </ThingDef>
</Defs>