<Defs>
<!-- ===========================================================================Ultratech Sharp base=========================================================================== -->
  <ThingDef Name="ATM_BaseUltratechMeleeWeapon_Sharp" Abstract="True" ParentName="BaseMeleeWeapon_Sharp_Quality">
    <techLevel>Ultra</techLevel>
    <smeltable>true</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
	<uiIconScale>1.2</uiIconScale>
	<relicChance>1</relicChance>
	<comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
	<costList>
		<AIPersonaCore>1</AIPersonaCore>
	</costList>
	<thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
	 <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
	<weaponTags>
		<li>UltratechMelee</li>
	</weaponTags>
	<recipeMaker>
      <researchPrerequisite>ATM_UltratechMelee</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
			<li>FabricationBench</li>
	  </recipeUsers>
    </recipeMaker>
  </ThingDef>
  
<!-- ===========================================================================Ultratech Blunt base=========================================================================== -->  
  <ThingDef Name="ATM_BaseUltratechMeleeWeapon_Blunt" Abstract="True" ParentName="ATM_BaseUltratechMeleeWeapon_Sharp">
    <weaponClasses Inherit="False">
      <li>MeleeBlunt</li>
    </weaponClasses>
  </ThingDef>
  
 <!-- ===========================================================================Ultratech Spear=========================================================================== -->
  <ThingDef ParentName="ATM_BaseUltratechMeleeWeapon_Sharp">
    <defName>ATM_MeleeWeapon_UltratechSpear</defName>
    <label>Ultratech spear</label>
    <description>This spear uses ancient technologies to squeeze metal into a thin 1 atom thick blade to cut through almost anything.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/Ultratech_Spear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <weaponTags>
		<li>Spear</li>
	</weaponTags>
    <costStuffCount>750</costStuffCount>
	<costList>
		<ComponentIndustrial>20</ComponentIndustrial>
		<ComponentSpacer>10</ComponentSpacer>
	</costList>
    <statBases>
	<WorkToMake>50000</WorkToMake>
		<Mass>2.5</Mass>
		</statBases>
    <equippedAngleOffset>-25</equippedAngleOffset>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>21</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>45</power>
        <armorPenetration>0.95</armorPenetration>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
