<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Silver patches n stuff -->

  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="MineableSilver"]/description</xpath>
        <value>
          <description>Rock containing bits of raw silver.</description>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="MineableSilver"]/building/mineableThing</xpath>
        <value>
          <mineableThing>TBW_Silver_Raw</mineableThing>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="MineableSilver"]/building/mineableYield</xpath>
        <value>
          <mineableYield>15</mineableYield>
        </value>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="Silver"]/deepCommonality</xpath>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="Silver"]/deepCountPerPortion</xpath>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="Silver"]/deepLumpSizeRange</xpath>
      </li>
      <li Class="PatchOperationReplace" MayRequire="airetexture.core">
        <xpath>Defs/ThingDef[defName="TBW_Silver_Raw"]/graphicData/texPath</xpath>
        <value>
          <texPath>Silver_upscaled</texPath>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Silver"]/stuffProps/color</xpath>
        <value>
          <color>(240,235,230)</color>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Silver"]/thingCategories/li[text()="ResourcesRaw"]</xpath>
        <value>
          <li>Manufactured</li>
        </value>
      </li>
    </operations>
  </Operation>

  <!-- Gold patches n stuff -->

  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="MineableGold"]/description</xpath>
        <value>
          <description>Rock containing bits of raw gold.</description>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="MineableGold"]/building/mineableThing</xpath>
        <value>
          <mineableThing>TBW_Gold_Raw</mineableThing>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="MineableGold"]/building/mineableYield</xpath>
        <value>
          <mineableYield>15</mineableYield>
        </value>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="Gold"]/deepCommonality</xpath>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="Gold"]/deepCountPerPortion</xpath>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="Gold"]/deepLumpSizeRange</xpath>
      </li>
      <li Class="PatchOperationReplace" MayRequire="airetexture.core">
        <xpath>Defs/ThingDef[defName="TBW_Gold_Raw"]/graphicData/texPath</xpath>
        <value>
          <texPath>Gold_upscaled</texPath>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Gold"]/stuffProps/color</xpath>
        <value>
          <color>(246,235,124)</color>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Gold"]/thingCategories/li[text()="ResourcesRaw"]</xpath>
        <value>
          <li>Manufactured</li>
        </value>
      </li>
    </operations>
  </Operation>

</Patch>