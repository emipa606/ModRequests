<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Silver -->

  <RecipeDef>
    <defName>TBW_Refine_Silver</defName>
    <label>Refine silver</label>
    <description>Refine, shape, and press raw silver into small, useful coins.</description>
    <jobString>Refining silver.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Smelting</soundWorking>
    <workAmount>500</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>TBW_Silver_Raw</li>
          </thingDefs>
        </filter>
        <count>1.5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>TBW_Silver_Raw</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Silver>42</Silver>
    </products>
    <skillRequirements>
      <Crafting>4</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <displayPriority>10</displayPriority>
    <recipeUsers>
      <li>FueledSmithy</li>
      <li>ElectricSmithy</li>
      <li MayRequire="vanillaexpanded.vfeproduction">VFE_TableSmithyLarge</li>
    </recipeUsers>
  </RecipeDef>
  <RecipeDef MayRequire="vanillaexpanded.vfeproduction">
    <defName>TBW_Bulk_Refine_Silver</defName>
    <label>Refine silver in bulk</label>
    <description>Refine, shape, and press a large amount of raw silver into small, useful coins.</description>
    <jobString>Refining silver in bulk.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Smelting</soundWorking>
    <workAmount>4500</workAmount>
