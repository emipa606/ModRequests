      <li>
        <filter>
          <thingDefs>
            <li>TBW_Silver_Raw</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>TBW_Silver_Raw</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Silver>420</Silver>
    </products>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <displayPriority>10</displayPriority>
    <recipeUsers>
      <li MayRequire="vanillaexpanded.vfeproduction">VFE_TableSmithyLarge</li>
    </recipeUsers>
  </RecipeDef>

