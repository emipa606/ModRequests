<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "RawFungus"]/ingestible/foodType</xpath>
	  <value><foodType>Meat</foodType></value>
	</Operation>
	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "RawFungus"]</xpath>
	  <value>
		<thingCategories>
		  <li>MeatRaw</li>
		</thingCategories>
	  </value>
	</Operation>		

	<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Berry"]/graphicData</xpath>
	  <value>
		<graphicData>
			<texPath>BerryPlant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
	  </value>
	</Operation>	

	<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Rose"]/graphicData</xpath>
	  <value>
	    <graphicData>
		  <texPath>Rose</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		</graphicData>
	  </value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Daylily"]/graphicData</xpath>
	  <value>
	    <graphicData>
		  <texPath>Daylily</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		</graphicData>
	  </value>
	</Operation>	

	<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Clivia"]/graphicData</xpath>
	  <value>
	    <graphicData>
		  <texPath>Clivia</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
			<drawSize>1.1</drawSize>
			<shadowData>
				<volume>(0.3, 0.2, 0.15)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
		</graphicData>
	  </value>
	</Operation>
	
</Patch>