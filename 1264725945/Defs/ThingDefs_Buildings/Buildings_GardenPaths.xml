<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
	<defName>SteppingStones</defName>
	<label>stepping stones</label>
    <thingClass>Building</thingClass>
    <description>A path made of discs of varying sizes. It will make gardens prettier.</description>
    <placingDraggableDimensions>2</placingDraggableDimensions>
    <category>Building</category>
    <graphicData>
      <texPath>GardenPaths/SteppingStones</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Flammability>0</Flammability>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>200</WorkToBuild>
      <Beauty>3</Beauty>
    </statBases>
    <building>
      <isEdifice>false</isEdifice>
    </building>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
	<costStuffCount>7</costStuffCount>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>Standable</passability>
    <tickerType>Normal</tickerType>
    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
	<designationCategory>Floors</designationCategory>
    <rotatable>false</rotatable>
  </ThingDef>
   

