<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
<ThingDef ParentName="PlantBase">
    <defName>PlantCCPAgaveCultivar</defName>
    <label>cultivated agave</label>
    <description>A cultivated variant of a large-leafed desert plant with edible flowers and stalks.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Beauty>1</Beauty>
	 <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Agave</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.6, 0.2)</volume>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>20</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.35</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawAgave</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <harvestWork>450</harvestWork>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <sowMinSkill>4</sowMinSkill>
      <topWindExposure>0.2</topWindExposure>
      <growDays>5.3</growDays>
      <visualSizeRange>0.3~0.9</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>PlantCCPDwarfBamboo</defName>
    <label>dwarf bamboo</label>
    <description>A small variant of bamboo, it won't yield much wood, but it's something.</description>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
		<texPath>Things/Plant/TreeBamboo</texPath>
		<graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible>
      <foodType>Tree</foodType>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
      <fertilityMin>1</fertilityMin>
      <fertilitySensitivity>0.75</fertilitySensitivity>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <harvestYield>4</harvestYield>
	  <harvestWork>300</harvestWork>
      <neverBlightable>true</neverBlightable>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.35</topWindExposure>
      <growDays>8.15</growDays>
      <visualSizeRange>0.7~1.3</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>PlantCCP_PastureGrass</defName>
    <label>pasture grass</label>
    <description>A fast-growing tall grass. It's difficult to move over, but great for feeding your herds.</description>
	<statBases>
		<MaxHitPoints>90</MaxHitPoints>
		<Flammability>1.3</Flammability>
		<Nutrition>0.50</Nutrition>
    </statBases>
	<pathCost>15</pathCost>
	<graphicData>
		<texPath>Things/Plant/Grass</texPath>
		<graphicClass>Graphic_Random</graphicClass>
	</graphicData>
	<hideAtSnowDepth>0.5</hideAtSnowDepth>
	<ingestible />
	<plant>
		<fertilitySensitivity>0.75</fertilitySensitivity>
		<growDays>2</growDays>
		<sowTags>
			<li>Ground</li>
		</sowTags>
		<harvestWork>75</harvestWork>
		<maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.7~0.85</visualSizeRange>
		<topWindExposure>0.4</topWindExposure>
	</plant>
  </ThingDef>
  
</Defs>
