<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation  Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
		
		<!-- WarVeil y TribalHeaddress para Tribal head normal =======================================================-->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Apparel_WarVeil"]/apparel</xpath>
				<value>
					<tags>
						<li>AFE_TribalHeadNormal</li>
					</tags>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Apparel_TribalHeaddress"]/apparel</xpath>
				<value>
					<tags>
						<li>AFE_TribalHeadNormal</li>
					</tags>
				</value>
			</li>
			
		<!-- WarMask para Tribal head war =============================================================================-->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Apparel_WarMask"]/apparel</xpath>
				<value>
					<tags>
						<li>AFE_TribalHeadWar</li>
					</tags>
				</value>
			</li>
			
		<!-- MaestersCloak para NG_Mage (para aprendices de magos, los otros ya les meto en required) ===============-->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="TM_MaestersCloak"]/apparel/tags</xpath>
				<value>
					<li>AFE_MageStuff</li>
				</value>
			</li>
			
		<!-- DefenderStaff con su propio tag porque lo necesito para los druidas ===============-->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="TM_DefenderStaff"]</xpath>
				<value>
					<weaponTags>
						<li>DefenderStaff</li>
					</weaponTags>
				</value>
			</li>
			
			
		</operations>
	</Operation >
</Patch>