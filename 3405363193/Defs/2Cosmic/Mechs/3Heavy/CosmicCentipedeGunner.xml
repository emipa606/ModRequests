<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Centipede - minigun -->
	<ThingDef ParentName="MechCentipedeCosmic_GAOTCE_Mech">
		<defName>Mech_CentipedeGunnerCosmic_GAOTCE_Mech</defName>
		<label>Cosmic centipede gunner</label>
		<statBases>
			<MechEnergyUsageFactor>0.5</MechEnergyUsageFactor>
		</statBases>
	</ThingDef>

	<PawnKindDef ParentName="MechCentipedeBase">
		<defName>Mech_CentipedeGunnerCosmic_GAOTCE_Mech</defName>
		<label>Cosmic centipede gunner</label>
		<race>Mech_CentipedeGunnerCosmic_GAOTCE_Mech</race>
		<allowInMechClusters>false</allowInMechClusters>
		<lifeStages Inherit="False">
			<li MayRequire="Ludeon.RimWorld.Biotech">
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/CentipedeGunnerClean</texPath>
					<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/CentipedeGunner</maskPath>
					<shaderType>CutoutWithOverlay</shaderType>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>3</drawSize>
					<shadowData>
						<volume>(0.6, 0.8, 0.6)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/CentipedeGunner</texPath>
					<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/CentipedeGunner</maskPath>
					<shaderType>CutoutWithOverlay</shaderType>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>3</drawSize>
					<shadowData>
						<volume>(0.6, 0.8, 0.6)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
		</lifeStages>
		<weaponTags>
			<li>MinigunCosmic_GAOTCE_Mech</li>
		</weaponTags>
	</PawnKindDef>


	<ThingDef ParentName="BaseGun">
		<defName>Gun_MinigunCosmic_GAOTCE_Mech</defName>
		<smeltable>false</smeltable>
		<label>Cosmic minigun</label>
		<description>A multi-barrel machine gun. It's unwieldy, but once it starts firing it fires very fast. Where most self-loading guns are powered by the energy from the gunpowder, the minigun uses an electric motor to rapidly cycle cartridges through the weapon.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/Minigun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<weaponClasses>
			<li>RangedHeavy</li>
		</weaponClasses>
		<statBases>
			<WorkToMake>60000</WorkToMake>
			<Mass>10</Mass>
			<AccuracyTouch>0.15</AccuracyTouch>
			<AccuracyShort>0.25</AccuracyShort>
			<AccuracyMedium>0.25</AccuracyMedium>
			<AccuracyLong>0.18</AccuracyLong>
			<RangedWeapon_Cooldown>2.3</RangedWeapon_Cooldown>
		</statBases>
		<techLevel>Industrial</techLevel>
		<weaponTags>
			<li>MinigunCosmic_GAOTCE_Mech</li>
		</weaponTags>
		<equippedStatOffsets>
			<MoveSpeed>-0.25</MoveSpeed>
		</equippedStatOffsets>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_MinigunCosmic_GAOTCE_Mech</defaultProjectile>
				<warmupTime>2.5</warmupTime>
				<range>30.9</range>
				<burstShotCount>25</burstShotCount>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
				<soundCast>Shot_Minigun</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>barrels</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>11.7</power>
				<cooldownTime>2.6</cooldownTime>
			</li>
		</tools>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_MinigunCosmic_GAOTCE_Mech</defName>
		<label>Cosmic minigun bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>40</damageAmountBase>
			<speed>70</speed>
		</projectile>
	</ThingDef>
</Defs>