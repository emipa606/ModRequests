<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<SoundDef>
		<defName>CarStartup</defName>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>engine_start</clipPath>
					</li>
				</grains>
				<volumeRange>25~30</volumeRange>
			</li>
		</subSounds>
	</SoundDef>
	
	<SoundDef>
		<defName>CarOff</defName>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>engine_off</clipPath>
					</li>
				</grains>
				<volumeRange>20~25</volumeRange>
			</li>
		</subSounds>
	</SoundDef>

	<SoundDef>
		<defName>CarDoor</defName>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>door_close</clipPath>
					</li>
				</grains>
				<volumeRange>30~35</volumeRange>
			</li>
		</subSounds>
	</SoundDef>

	<SoundDef>
		<defName>CarIdle</defName>
		<sustain>true</sustain>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<priorityMode>PrioritizeNearest</priorityMode>
		<subSounds>
			<li>
				<muteWhenPaused>True</muteWhenPaused>
				<grains>
					<li Class="AudioGrain_Clip">
					<clipPath>car_idle</clipPath>
					</li>
				</grains>
				<pitchRange>0.98~1</pitchRange>
				<volumeRange>35~40</volumeRange>
				<sustainAttack>2.5</sustainAttack>
				<sustainRelease>2.5</sustainRelease>
			</li>
		</subSounds>
	</SoundDef>

</Defs>