<?xml version="1.0" encoding="utf-8" ?>

<Defs>
  <RecipeDef>
    <defName>ExtractHyperweaveFibers</defName>
    <label>extract hyperweave fibers from raw hyper shroom</label>
    <description>Smash the raw fungus to reveal and produce hyperweave fibers</description>
    <jobString>Producing hyperweave fibers.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawHyperShroom</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <products>
      <Hyperweave>10</Hyperweave>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawHyperShroom</li>
      </thingDefs>
    </fixedIngredientFilter>
	<recipeUsers>
	  <li>HandTailoringBench</li>
	  <li>ElectricTailoringBench</li>
	</recipeUsers>
  </RecipeDef>
  <RecipeDef>
    <defName>BulkExtractHyperweaveFibers</defName>
    <label>bulk extract hyperweave fibers from raw hyper shroom</label>
    <description>Smash the raw fungus to reveal and produce hyperweave fibers</description>
    <jobString>Producing hyperweave fibers.</jobString>
    <workAmount>5200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawHyperShroom</li>
          </thingDefs>
        </filter>
        <count>500</count>
      </li>
    </ingredients>
    <products>
      <Hyperweave>100</Hyperweave>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawHyperShroom</li>
      </thingDefs>
    </fixedIngredientFilter>
	<recipeUsers>
	  <li>HandTailoringBench</li>
	  <li>ElectricTailoringBench</li>
	</recipeUsers>
  </RecipeDef>
  

</Defs>