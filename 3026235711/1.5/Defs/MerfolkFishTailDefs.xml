        </abilities>
        <biostatMet>-2</biostatMet>
        <biostatCpx>2</biostatCpx>
        <displayOrderInCategory>402</displayOrderInCategory>
        <bodyType>Standard</bodyType>
        <exclusionTags>
            <li>Fur</li>
        </exclusionTags>
    </GeneDef>

