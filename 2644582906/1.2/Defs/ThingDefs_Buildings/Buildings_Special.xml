<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>RW_RadiationCollector</defName>
		<label>radiation collector</label>
		<description>Uses pump technology to remove radiation from the soil in conjunction with an air pump to create a small area to keep colonists free from radiation.</description>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Building</altitudeLayer>
		<graphicData>
			<texPath>Things/Building/Misc/RadCollector</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<statBases>
			<Mass>15</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>1500</MarketValue>
			<WorkToBuild>2520</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>0</Beauty>
		</statBases>
		<fillPercent>0.20</fillPercent>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
			<uninstallWork>240</uninstallWork>
		</building>
		<costList>
			<ComponentIndustrial>9</ComponentIndustrial>
			<Steel>120</Steel>
			<Plasteel>15</Plasteel>
			<Cloth>100</Cloth>
		</costList>
		<specialDisplayRadius>6.9</specialDisplayRadius>
		<pathCost>30</pathCost>
		<passability>PassThroughOnly</passability>
		<designationCategory>Misc</designationCategory>
		<rotatable>false</rotatable>
		<researchPrerequisites>
			<li>RW_RadCleanser</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1500</basePowerConsumption>
			</li>
		</comps>
	</ThingDef>

