<Defs>

	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>RW_Apparel_DuctTapedGasMask</defName>
		<label>duct taped gas mask</label>
		<description>Old damaged gas mask barely being held together by duct tape.</description>
		<techLevel>Neolithic</techLevel>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Apparel/PatchedMask/PatchedMask</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.4</uiIconScale>
		<costList>
			<Silver>10</Silver>
			<Steel>10</Steel>
			<Cloth>15</Cloth>
		</costList>
		<statBases>
			<MarketValue>100</MarketValue>
			<WorkToMake>4500</WorkToMake>
			<MaxHitPoints>70</MaxHitPoints>
			<Beauty>-4</Beauty>
			<Flammability>1</Flammability>
			<Mass>1.24</Mass>
			<SellPriceFactor>0.70</SellPriceFactor>
			<DeteriorationRate>4.0</DeteriorationRate>
			<RW_RadiationResistanceOffset>0.05</RW_RadiationResistanceOffset>
			<RW_RadiationResistancePoweredOffset>0.15</RW_RadiationResistancePoweredOffset>
			<ArmorRating_Sharp>0.02</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.072</ArmorRating_Blunt>
			<ArmorRating_Heat>0.03</ArmorRating_Heat>
			<EquipDelay>3.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>-0.10</SocialImpact>
		</equippedStatOffsets>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>CraftingSpot</li>
				<li>HandTailoringBench</li>
				<li>ElectricTailoringBench</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>0</Crafting>
			</skillRequirements>
		</recipeMaker>
		<comps>
			<li Class="CompProperties_Reloadable">
				<compClass>RadWorld.CompGasMaskReloadable</compClass>
				<maxCharges>2</maxCharges>
				<ammoDef>RW_GasMaskFilter</ammoDef>
				<ammoCountToRefill>2</ammoCountToRefill>
				<baseReloadTicks>60</baseReloadTicks>
				<soundReload>Standard_Reload</soundReload>
				<hotKey>Misc4</hotKey>
				<chargeNoun>smokepop</chargeNoun>
				<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
			</li>
		</comps>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/PatchedMask/PatchedMask</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

