<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>RW_Apparel_PatchWork_HazardSuit</defName>
		<label>patchwork hazard suit</label>
		<description>Old hazmat suit that has been patched numerous times over the years. Used to protect the wearer from radiation in the air.</description>
		<graphicData>
			<texPath>Things/Apparel/PatchedSuit/PatchedSuit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costList>
			<Silver>20</Silver>
			<Steel>10</Steel>
			<Cloth>35</Cloth>
		</costList>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>CraftingSpot</li>
				<li>HandTailoringBench</li>
				<li>ElectricTailoringBench</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>0</Crafting>
			</skillRequirements>
		</recipeMaker>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<MarketValue>175</MarketValue>
			<WorkToMake>6000</WorkToMake>
			<Beauty>-6</Beauty>
			<Flammability>1</Flammability>
			<Mass>3.80</Mass>
			<SellPriceFactor>0.70</SellPriceFactor>
			<DeteriorationRate>4.0</DeteriorationRate>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<EquipDelay>5</EquipDelay>
			<RW_RadiationResistanceOffset>0.25</RW_RadiationResistanceOffset>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>-0.10</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/PatchedSuit/PatchedSuit</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

