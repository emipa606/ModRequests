<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rimworld: Altered Carbon</li>
		</mods>
		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> -->
			<operations>
			<!-- Protectorate Armor -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "AC_Apparel_ProtectorateArmor"]/description</xpath>
						<value>
							<description>A suit of light, powered armor used on the core worlds. Layered metal-weave plates are effective at stopping attacks, with few vulnerable joint sections. Neuro-memetic assistors allow a human to wear the armor and still move easily.</description>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorProtectorateBase"]</xpath>
						<value>
							<stuffCategories />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorProtectorateBase"]/stuffCategories</xpath>
						<value>
							<li>Metallic</li>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorProtectorateBase"]</xpath>
						<value>
							<costStuffCount />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorProtectorateBase"]/costStuffCount</xpath>
						<value>
							85
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorProtectorateBase"]/costList/Plasteel</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorProtectorateBase"]/statBases/ArmorRating_Sharp</xpath>
						<value>
							<StuffEffectMultiplierArmor>.842</StuffEffectMultiplierArmor>
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorProtectorateBase"]/statBases/ArmorRating_Blunt</xpath>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorProtectorateBase"]/statBases/ArmorRating_Heat</xpath>	
				</li>				
				<!-- Protectorate Helmet -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "AC_Apparel_ProtectorateArmorHelmet"]/description</xpath>
						<value>
							<description>A protectorate armor helmet, with a built-in status computer and layered metal-weave plates.</description>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorHelmetProtectorateBase"]</xpath>
						<value>
							<stuffCategories />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorHelmetProtectorateBase"]/stuffCategories</xpath>
						<value>
							<li>Metallic</li>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorHelmetProtectorateBase"]</xpath>
						<value>
							<costStuffCount />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorHelmetProtectorateBase"]/costStuffCount</xpath>
						<value>
							60
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorHelmetProtectorateBase"]/costList/Plasteel</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorHelmetProtectorateBase"]/statBases/ArmorRating_Sharp</xpath>
						<value>
							<StuffEffectMultiplierArmor>.842</StuffEffectMultiplierArmor>
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorHelmetProtectorateBase"]/statBases/ArmorRating_Blunt</xpath>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "AC_ApparelArmorHelmetProtectorateBase"]/statBases/ArmorRating_Heat</xpath>	
				</li>
			</operations>
		</match>
	</Operation>
</Patch>