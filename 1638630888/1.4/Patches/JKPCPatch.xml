<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Jin-Roh Kerberos Panzer Cop Armor (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> -->
			<operations>
			<!-- Kerberos Armor -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]</xpath>
						<value>
							<stuffCategories />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/stuffCategories</xpath>
						<value>
							<li>Metallic</li>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]</xpath>
						<value>
							<costStuffCount />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/costStuffCount</xpath>
						<value>
							120
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/costList/Steel</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/statBases/ArmorRating_Sharp</xpath>
						<value>
							<StuffEffectMultiplierArmor>1.01</StuffEffectMultiplierArmor>
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/statBases/ArmorRating_Blunt</xpath>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/statBases/ArmorRating_Heat</xpath>	
				</li>				
				<!-- Kerberos Helmet -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]</xpath>
						<value>
							<stuffCategories />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/stuffCategories</xpath>
						<value>
							<li>Metallic</li>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]</xpath>
						<value>
							<costStuffCount />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/costStuffCount</xpath>
						<value>
							40
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/costList/Steel</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/statBases/ArmorRating_Sharp</xpath>
						<value>
							<StuffEffectMultiplierArmor>.8</StuffEffectMultiplierArmor>
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/statBases/ArmorRating_Blunt</xpath>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/statBases/ArmorRating_Heat</xpath>	
				</li>
			</operations>
		</match>
	</Operation>
</Patch>