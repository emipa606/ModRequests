<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[LB] SectorVII</li>
		</mods>
		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> -->
			<operations>
			<!-- Sector VII Power Armor -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "LBSC7_PowerArmor"]/description</xpath>
						<value>
							<description>A suit of powered armor. Layered metal-weave plates are very effective at stopping attacks, with few vulnerable joint sections. Neuro-memetic assistors allow a human to wear the armor and still move easily.\n\nArmor like this is often used by SectorVII Heavy troops.</description>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelPowerArmorBase"]</xpath>
						<value>
							<stuffCategories />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelPowerArmorBase"]/stuffCategories</xpath>
						<value>
							<li>Metallic</li>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelPowerArmorBase"]</xpath>
						<value>
							<costStuffCount />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelPowerArmorBase"]/costStuffCount</xpath>
						<value>
							100
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelPowerArmorBase"]/costList/Plasteel</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelPowerArmorBase"]/statBases/ArmorRating_Sharp</xpath>
						<value>
							<StuffEffectMultiplierArmor>0.93</StuffEffectMultiplierArmor>
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelPowerArmorBase"]/statBases/ArmorRating_Blunt</xpath>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelPowerArmorBase"]/statBases/ArmorRating_Heat</xpath>	
				</li>
			<!-- Sector VII Recon Armor -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "LBSC7_ReconArmor"]/description</xpath>
						<value>
							<description>A suit of light partially-powered armor, designed to permit quick movement. Lightweight metal-weave plates block attacks without compromising mobility, and neuro-memetic assistors in the lower body allow a human to wear the armor and still move easily.\n\nArmor like this is often used by SectorVII Recon troops.</description>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelReconArmorBase"]</xpath>
						<value>
							<stuffCategories />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelReconArmorBase"]/stuffCategories</xpath>
						<value>
							<li>Metallic</li>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelReconArmorBase"]</xpath>
						<value>
							<costStuffCount />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelReconArmorBase"]/costStuffCount</xpath>
						<value>
							80
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelReconArmorBase"]/costList/Plasteel</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelReconArmorBase"]/statBases/ArmorRating_Sharp</xpath>
						<value>
							<StuffEffectMultiplierArmor>0.807</StuffEffectMultiplierArmor>
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelReconArmorBase"]/statBases/ArmorRating_Blunt</xpath>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelReconArmorBase"]/statBases/ArmorRating_Heat</xpath>	
				</li>
			<!-- Sector VII Power Armor Helmet -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "LBSC7_PowerHelmet"]/description</xpath>
						<value>
							<description>A power armor helmet, with a built-in status computer and layered metal-weave plates.\n\nArmor like this is often used by SectorVII Elite troops.</description>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorPowerHelmetBase"]</xpath>
						<value>
							<stuffCategories />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorPowerHelmetBase"]/stuffCategories</xpath>
						<value>
							<li>Metallic</li>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorPowerHelmetBase"]</xpath>
						<value>
							<costStuffCount />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorPowerHelmetBase"]/costStuffCount</xpath>
						<value>
							40
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorPowerHelmetBase"]/costList/Plasteel</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorPowerHelmetBase"]/statBases/ArmorRating_Sharp</xpath>
						<value>
							<StuffEffectMultiplierArmor>0.93</StuffEffectMultiplierArmor>
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorPowerHelmetBase"]/statBases/ArmorRating_Blunt</xpath>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorPowerHelmetBase"]/statBases/ArmorRating_Heat</xpath>	
				</li>
			<!-- Sector VII Recon Armor Helmet -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "LBSC7_ReconHelmet"]/description</xpath>
						<value>
							<description>A high-tech armored helmet with a built-in status computer and a protective metal-weave plate.\n\nArmor like this is often used by SectorVII Recon troops.</description>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorReconHelmetBase"]</xpath>
						<value>
							<stuffCategories />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorReconHelmetBase"]/stuffCategories</xpath>
						<value>
							<li>Metallic</li>
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorReconHelmetBase"]</xpath>
						<value>
							<costStuffCount />
						</value>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorReconHelmetBase"]/costStuffCount</xpath>
						<value>
							30
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorReconHelmetBase"]/costList/Plasteel</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorReconHelmetBase"]/statBases/ArmorRating_Sharp</xpath>
						<value>
							<StuffEffectMultiplierArmor>0.807</StuffEffectMultiplierArmor>
						</value>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorReconHelmetBase"]/statBases/ArmorRating_Blunt</xpath>	
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[@Name = "LBSC7ApparelArmorReconHelmetBase"]/statBases/ArmorRating_Heat</xpath>	
				</li>
			</operations>
		</match>
	</Operation>
</Patch>