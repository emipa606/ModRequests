		<thingClass>PawnJumper</thingClass>
		<pawnFlyer>
			<flightDurationMin>0.5</flightDurationMin>
			<flightSpeed>12</flightSpeed>
<!--		<flightEffecterDef>IG_JumpFlightEffect</flightEffecterDef>
