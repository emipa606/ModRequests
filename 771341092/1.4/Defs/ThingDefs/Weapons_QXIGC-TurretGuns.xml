<Defs>

	<!--QX==================== Imperial Guard Turret Addon Mod - Automated Mini-AutoGun Sentry Turret =========================QX-->

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_ASTMiniAutoGun</defName>
		<label>AST MiniAutoGun Bullet</label>
		<graphicData>
			<texPath>Things/IGTurrets/SentryTurrets/ASTAutoGun/ATAutoGunProjectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile>
			<damageDef>IGBullet</damageDef>
			<damageAmountBase>3</damageAmountBase>
			<speed>100</speed>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseIGTurretGun">
		<defName>Turret_ASTMiniAutoGun</defName>
		<label>Auto Sentry MiniAutoGun</label>
		<description>The AutoSentry MiniAutoGun Turret, an awesome metal spitting device, small compact and designed for primarily indoor use.</description>
		<graphicData>
			<texPath>Things/IGTurrets/SentryTurrets/ASTAutoGun/ATAutoGunMk1</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>InteractIGRWeapons</soundInteract>
		<statBases>
			<AccuracyTouch>0.90</AccuracyTouch>
			<AccuracyShort>0.80</AccuracyShort>
			<AccuracyMedium>0.75</AccuracyMedium>
			<AccuracyLong>0.60</AccuracyLong>
			<RangedWeapon_Cooldown>0.20</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>TurretGun</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_ASTAutoGun</defaultProjectile>
				<warmupTime>0.3</warmupTime>
				<range>18</range>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<burstShotCount>10</burstShotCount>
				<soundCast>Shot_Minigun</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>3</muzzleFlashScale>
			</li>
		</verbs>
		<thingCategories>
			<li>IGAutoTurrets</li>
		</thingCategories>
	</ThingDef>

