<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--QX==================== Imperial Guard Core Mod - Floor Tile BASE =========================QX-->

	<TerrainDef Name="IG_FloorBase" Abstract="True">
		<layerable>true</layerable>
		<affordances>
			<li>Light</li>
			<li>Medium</li>
			<li>Heavy</li>
		</affordances>
		<tags>
			<li>Floor</li>
		</tags>
		<statBases>
			<WorkToMake>135</WorkToMake>
		</statBases>
		<designationCategory>Floors</designationCategory>
		<fertility>0</fertility>
		<constructEffect>ConstructDirt</constructEffect>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
	</TerrainDef>

	<TerrainDef  ParentName="IG_FloorBase" Name="IGCoreTile" Abstract="True">
		<renderPrecedence>240</renderPrecedence>
		<description>Tiles, for the Imperium Bases.</description>
		<texturePath>Terrain/Surfaces/GenericFloorTile</texturePath>
		<color>(204,204,204)</color>
		<edgeType>Hard</edgeType>
		<constructEffect>ConstructMetal</constructEffect>
		<researchPrerequisites><li>ImperialMetals</li></researchPrerequisites>
	</TerrainDef>
	
	<!--QX==================== Imperial Guard Core Mod - Floor Tiles =========================QX-->
	
	<TerrainDef  ParentName="IGCoreTile">
		<defName>AdamantiumTile</defName>
		<label>Adamantium Tile</label>
		<description>Adamantium Tiles, To Precious to be used on the floor really!.</description>
		<texturePath>Things/IGCore/Building/Floor/IGTile512x512</texturePath>
		<color>(250,235,215)</color>
		<statBases>
			<WorkToBuild>400</WorkToBuild>
			<Beauty>8</Beauty>
			<Cleanliness>0.2</Cleanliness>
		</statBases>
		<costList>
			<Adamantium>5</Adamantium>
		</costList>
		<designatorDropdown>Imperial_Tile</designatorDropdown>
	</TerrainDef>

	<TerrainDef  ParentName="IGCoreTile">
		<defName>CeramiteTile</defName>
		<label>Ceramite Tile</label>
		<description>Ceramite Tiles, for that Hive World look and feel!.</description>
		<texturePath>Things/IGCore/Building/Floor/IGTile512x512</texturePath>
		<color>(135,124,58)</color>
		<statBases>
			<WorkToBuild>400</WorkToBuild>
			<Beauty>2</Beauty>
			<Cleanliness>0.1</Cleanliness>
		</statBases>
		<costList>
			<Ceramite>3</Ceramite>
		</costList>
		<designatorDropdown>Imperial_Tile</designatorDropdown>
	</TerrainDef>
	
	<!--QX==================== Imperial Guard Core Mod - Floor Tiles FINE =========================QX-->
	
	<TerrainDef  ParentName="IGCoreTile">
		<defName>IG_AdamantiumTileFINE</defName>
		<label>Fine Adamantium Tile</label>
		<description>Adamantium Tiles, gold flecked tile that is created a fine floor fit for even the most pretentious individuals!.</description>
		<texturePath>Things/IGCore/Building/Floor/IGTile512x512FINE</texturePath>
		<color>(250,235,215)</color>
		<statBases>
			<WorkToBuild>400</WorkToBuild>
			<Beauty>10</Beauty>
			<Cleanliness>0.3</Cleanliness>
		</statBases>
		<costList>
			<Adamantium>5</Adamantium>
			<Gold>1</Gold>
		</costList>
		<designatorDropdown>Imperial_Tile_Fine</designatorDropdown>
		<tags>
			<li>FineFloor</li>
		</tags>
	</TerrainDef>

	<TerrainDef  ParentName="IGCoreTile">
		<defName>IG_CeramiteTile_FINE</defName>
