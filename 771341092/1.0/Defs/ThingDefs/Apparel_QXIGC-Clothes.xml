<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--QX========================= Imperial Guard - IGJumpSuit ==========================QX-->

	<ThingDef ParentName="IGCApparelMakeableBase">
		<defName>IGJumpSuit</defName>
		<label>Imperial Guard JumpSuit</label>
		<description>Standard Imperial Guard Jumpsuit, to keep them warm in winter and cool in summer, also has it form fitting alow allow for better movement so making you a little more efficient...</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/IGCore/Pawn/JumpSuit/IGJumpsuit</texPath>
		</graphicData>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<MarketValue>350</MarketValue>
			<MaxHitPoints>1000</MaxHitPoints>
			<WorkToMake>20000</WorkToMake>
			<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
			<Mass>1.00</Mass>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.05</MoveSpeed>
			<WorkSpeedGlobal>0.05</WorkSpeedGlobal>
			<ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
			<PsychicSensitivity>-0.05</PsychicSensitivity>
			<Insulation_Heat>10</Insulation_Heat>
			<Insulation_Cold>10</Insulation_Cold>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/IGCore/Pawn/JumpSuit/IGJumpsuit</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>ImperialClothes</li>
			</tags>
		</apparel>
		<thingCategories>
			<li>ImperialClothes</li>
		</thingCategories>
		<tradeTags>
			<li>ImperialClothes</li>
		</tradeTags>
	</ThingDef>
	
