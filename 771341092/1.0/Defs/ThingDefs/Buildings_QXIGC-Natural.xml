<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--QX==================== Imperial Guard Core Mod - Compacted Ceramite in World =========================QX-->

	<ThingDef ParentName="IG_RockBase">
		<defName>MineableCeramite</defName>
		<label>Compacted Ceramite</label>
		<graphicData>
			<texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(135,124,58)</color>
			<colorTwo>(204,204,204)</colorTwo>
		</graphicData>
		<statBases>
			<MaxHitPoints>4000</MaxHitPoints>
		</statBases>
		<description>Natural Ceramite</description>
		<building>
			<isResourceRock>true</isResourceRock>
			<mineableThing>Ceramite</mineableThing>
			<mineableYield>40</mineableYield>
			<mineableScatterCommonality>0.23</mineableScatterCommonality>
			<mineableScatterLumpSizeRange>
				<min>10</min>
				<max>30</max>
			</mineableScatterLumpSizeRange>
		</building>
	</ThingDef>

