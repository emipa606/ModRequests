<Defs>

	<!--QX==================== Imperial Guard Core Mod - RAW Resource Ceramite =========================QX-->

	<ThingDef ParentName="IGResourceBase">
		<defName>Ceramite</defName>
		<label>Ceramite</label>
		<description>Ceramite is a form of heat and shock-resistant ceramic material that is widely used throughout the Imperium of Man. High-quality ceramite is used in the higher-quality types of Imperial armour</description>
		<graphicData>
			<texPath>Things/IGCore/Resource/CeramiteIcon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<resourceReadoutPriority>First</resourceReadoutPriority>
		<soundInteract>Silver_Drop</soundInteract>
		<soundDrop>Silver_Drop</soundDrop>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<MarketValue>8</MarketValue>
			<Mass>0.25</Mass>
			<StuffPower_Armor_Sharp>1.26</StuffPower_Armor_Sharp>
			<StuffPower_Armor_Blunt>0.63</StuffPower_Armor_Blunt>
			<StuffPower_Armor_Heat>1.08</StuffPower_Armor_Heat>
			<StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
			<SharpDamageMultiplier>1.1</SharpDamageMultiplier>
			<BluntDamageMultiplier>1.1</BluntDamageMultiplier>
		</statBases>
		<stuffProps>
			<categories>
				<li>Metallic</li>
			</categories>
			<color>(135,124,58)</color>
			<constructEffect>ConstructMetal</constructEffect>
			<soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
			<soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
			<soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
			<statFactors>
				<MaxHitPoints>2.9</MaxHitPoints>
				<Flammability>0</Flammability>
				<Beauty>1</Beauty>
				<DoorOpenSpeed>1.25</DoorOpenSpeed>
				<BedRestEffectiveness>0.9</BedRestEffectiveness>
				<WorkToMake>2.2</WorkToMake>
				<MeleeWeapon_CooldownMultiplier>0.75</MeleeWeapon_CooldownMultiplier>
			</statFactors>
			<smeltable>true</smeltable>
		</stuffProps>
		<researchPrerequisites><li>ImperialMetals</li></researchPrerequisites>
		<thingCategories>
			<li>IGCRawResources</li>
		</thingCategories>
		<tradeTags>
			<li>IGCRawResources</li>
		</tradeTags>
	</ThingDef>

	<!--QX==================== Imperial Guard Core Mod - RAW Resource Adamantium =========================QX-->

	<ThingDef ParentName="IGResourceBase">
		<defName>Adamantium</defName>
		<label>Adamantium</label>
