<?xml version="1.0" encoding="utf-8"?>

<Defs>

	<!--QX==================== Imperial Guard Core Mod - ChainSaw Sound =========================QX-->

	<SoundDef>
		<defName>ChainSawSound</defName>
		<context>MapOnly</context>
		<eventNames />  
		<maxSimultaneous>1</maxSimultaneous>  
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Folder">
					<clipFolderPath>IGCore/Weapons/ChainSaw</clipFolderPath>
					</li>
				</grains>      
				<volumeRange>
					<min>30.0</min>        
					<max>40.0</max>
				</volumeRange>      
				<pitchRange>
				  <min>0.9</min>        
				  <max>1.0</max>
				</pitchRange>      
				<sustainLoop>False</sustainLoop>
			</li>
		</subSounds>
	</SoundDef>

