<Defs>

	<!--QX==================== Imperial Guard Core Mod - SML Explosion Sound =========================QX-->

	<SoundDef>
		<defName>IGSML_Explosion</defName>
		<context>MapOnly</context>
		<eventNames />  
		<maxSimultaneous>1</maxSimultaneous>  
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>IGCore/Explosions/SML_Explosion</clipPath>
					</li>
				</grains>      
				<volumeRange>
					<min>10.0</min>        
					<max>15.0</max>
				</volumeRange>      
				<pitchRange>
					<min>0.9</min>        
					<max>1.2</max>
				</pitchRange>      
				<sustainLoop>False</sustainLoop>
			</li>
		</subSounds>
	</SoundDef>

