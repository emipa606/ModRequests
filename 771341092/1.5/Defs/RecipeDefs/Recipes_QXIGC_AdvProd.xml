	<RecipeDef Name="IG_CreateStoneBlocksBase" Abstract="True">
		<jobString>Cutting stone blocks from chunk.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<targetCountAdjustment>60</targetCountAdjustment>
	</RecipeDef>

	<RecipeDef ParentName="IG_CreateStoneBlocksBase">
		<defName>IG_Create_StoneBlocksAny</defName>
		<label>make any stone blocks</label>
		<description>Cut rock chunks into usable stone blocks.</description>
		<workerCounterClass>RecipeWorkerCounter_MakeStoneBlocks</workerCounterClass>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneChunks</li>
			</categories>
		</fixedIngredientFilter>
		<specialProducts>
			<li>Butchery</li>
		</specialProducts>
	</RecipeDef>
	
