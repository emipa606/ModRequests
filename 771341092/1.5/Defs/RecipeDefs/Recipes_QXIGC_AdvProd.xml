<Defs>

    <!-- ========================= Imperial Assembler - Create Imperial Component ==========================-->

	<RecipeDef>
		<defName>CreateImperialComponent</defName>
		<label>Create Imperial Component</label>
		<description>Use Cermite, Silver and standard Components to create Imperial Components</description>
		<jobString>Fabricating Imperial Component</jobString>
		<workAmount>2500</workAmount>
		<unfinishedThingDef>IG_Unfinished_IMPComponent</unfinishedThingDef>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>IG_Recipe_Fabricators</soundWorking>
		<ingredients>
			<li><filter><thingDefs><li>Ceramite</li></thingDefs></filter><count>4</count></li>
			<li><filter><thingDefs><li>Silver</li></thingDefs></filter><count>1</count></li>
			<li><filter><thingDefs><li>ComponentIndustrial</li></thingDefs></filter><count>1</count></li>
		</ingredients>
			<products>
				<ImperialComponent>2</ImperialComponent>
			</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Ceramite</li>
				<li>Silver</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
	</RecipeDef>

