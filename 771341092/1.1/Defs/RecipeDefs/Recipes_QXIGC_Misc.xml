	<!-- ========================= Imperial Assembler - Create Vanilla AI Persona Core ==========================-->

	<RecipeDef>
		<defName>IG_Create_AIPersonaCore</defName>
		<label>Create AIPersonaCore</label>
		<description>Use Imperial Components to create AIPersonaCore</description>
		<jobString>Fabricating AIPersonaCore</jobString>
		<workAmount>2500</workAmount>
		<unfinishedThingDef>IG_Unfinished_IMPComponent</unfinishedThingDef>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<workSkill>Intellectual</workSkill>
		<soundWorking>IG_Recipe_MEDFab</soundWorking>
		<ingredients>
			<li><filter><thingDefs><li>IG_IMPMedKit</li></thingDefs></filter>				<count>1</count></li>
			<li><filter><thingDefs><li>IG_ImperialNanoComponent</li></thingDefs></filter>	<count>5</count></li>
			<li><filter><thingDefs><li>IG_Aug_GENE</li></thingDefs></filter>				<count>1</count></li>
			<li><filter><thingDefs><li>IG_RefinedKalma</li></thingDefs></filter>			<count>10</count></li>
		</ingredients>
			<products>
				<AIPersonaCore>1</AIPersonaCore>
			</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>IG_IMPMedKit</li>
				<li>IG_ImperialNanoComponent</li>
				<li>IG_Aug_GENE</li>
				<li>IG_RefinedKalma</li>
			</thingDefs>
		</fixedIngredientFilter>
		<researchPrerequisite>ART3Augments</researchPrerequisite>
	</RecipeDef>	
	
	<!-- ========================= Imperial Assembler - Create Vanilla AntigrainWarhead Shell ==========================-->
	
	<RecipeDef>
		<defName>IG_Create_Ammo_IGrain</defName>
		<label>Create AntigrainWarhead Shell</label>
		<description>Fabricate AntigrainWarhead Shell</description>
		<jobString>Fabricating AntigrainWarhead Shell</jobString>
		<workAmount>1000</workAmount>
		<unfinishedThingDef>IG_Unfinished_IMPComponent</unfinishedThingDef>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>IG_Recipe_Fabricators</soundWorking>
		<ingredients>
			<li><filter><thingDefs><li>Ceramite</li></thingDefs></filter><count>50</count></li>
			<li><filter><thingDefs><li>ImperialComponent</li></thingDefs></filter><count>1</count></li>
			<li><filter><thingDefs><li>ImperialPowercore</li></thingDefs></filter><count>1</count></li>
			<li><filter><thingDefs><li>Promethium</li></thingDefs></filter><count>50</count></li>
		</ingredients>
			<products>
				<Shell_AntigrainWarhead>1</Shell_AntigrainWarhead>
			</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Ceramite</li>
				<li>ImperialComponent</li>
				<li>ImperialPowercore</li>
				<li>Promethium</li>
			</thingDefs>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
	
