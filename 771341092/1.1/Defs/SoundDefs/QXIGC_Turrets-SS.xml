<?xml version="1.0" encoding="utf-8"?>

<Defs>

	<!--QX==================== Imperial Guard Core Mod - LasGun Cannon Turret Sound =========================QX-->

	<SoundDef>
		<defName>LasCannonSound</defName>
		<context>MapOnly</context>
		<eventNames />  
		<maxSimultaneous>1</maxSimultaneous>  
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Folder">
					<clipFolderPath>IGTurrets/FiringSound/LasCannon</clipFolderPath>
					</li>
				</grains>      
				<volumeRange>
					<min>45.0</min>        
					<max>55.0</max>
				</volumeRange>      
				<pitchRange>
				  <min>0.9</min>        
				  <max>1.0</max>
				</pitchRange>      
				<sustainLoop>False</sustainLoop>
			</li>
		</subSounds>
	</SoundDef>

