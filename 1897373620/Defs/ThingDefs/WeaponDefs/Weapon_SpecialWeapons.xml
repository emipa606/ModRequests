<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
  <ThingDef ParentName="BaseMakeableGun">
    <defName>CE_M_VoltDriver</defName>
    <label>15mm Volt Driver</label>
    <description>Railgun with low recoil and high power.</description>
    <graphicData>
      <texPath>Weapons/VoltDriver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>750000</WorkToMake>
      <SightsEfficiency>2.5</SightsEfficiency>
      <ShotSpread>0.01</ShotSpread>
      <SwayFactor>0.25</SwayFactor>
      <Bulk>0.1</Bulk>
      <Mass>0.85</Mass>
      <RangedWeapon_Cooldown>0.20</RangedWeapon_Cooldown>
    </statBases>
	    <recipeMaker>
		<researchPrerequisite>Gunsmithing</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>TableMachining</li>
      </recipeUsers>
	    </recipeMaker>
		<weaponTags Inherit="False">
    </weaponTags>
    <costList>
      <Steel>100</Steel>
	  <Plasteel>20</Plasteel>
      <ComponentIndustrial>20</ComponentIndustrial>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_15mmBallBearingRail</defaultProjectile>
        <warmupTime>0.30</warmupTime>
        <range>150</range>
		<soundCast>Explosion_Stun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
		<muzzleFlashScale>3</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>10</magazineSize>
        <reloadTime>3</reloadTime>
        <ammoSet>AmmoSet_15mmBallBearingRail</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
	    <aiUseBurstMode>true</aiUseBurstMode>
        <aiAimMode>Snapshot</aiAimMode>
		<aimedBurstShotCount>5</aimedBurstShotCount>
      </li>
    </comps>
      <tools>
        <li Class="CombatExtended.ToolCE">
          <label>Grip</label>
          <capacities>
            <li>Blunt</li>
          </capacities>
          <power>9</power>
          <cooldownTime>1.8</cooldownTime>
          <chanceFactor>1.5</chanceFactor>
          <armorPenetration>0.11</armorPenetration>
          <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
        </li>
        <li Class="CombatExtended.ToolCE">
          <label>Muzzle</label>
          <capacities>
            <li>Poke</li>
          </capacities>
          <power>10</power>
          <cooldownTime>1.9</cooldownTime>
          <armorPenetration>0.086</armorPenetration>
          <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
        </li>
      </tools>
  </ThingDef>
  
