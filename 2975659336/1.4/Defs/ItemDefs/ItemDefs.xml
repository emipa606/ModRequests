<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>InstallationKit</defName>
    <label>installation kit</label>
    <description>A kit used to install mechanoid modifications.</description>
    <graphicData>
      <texPath>Things/Item/InstallationKit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>0.75</drawSize>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>25</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <WorkToMake>1000</WorkToMake>
      <Mass>0.6</Mass>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <costList>
      <ComponentIndustrial>1</ComponentIndustrial>
      <Chemfuel>20</Chemfuel>
    </costList>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>SubcoreEncoder</li>
      </recipeUsers>
      <researchPrerequisite>PrimitiveModifications</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <bulkRecipeCount>5</bulkRecipeCount>
    </recipeMaker>
    <intricate>true</intricate>
    <thingCategories>
	  <li>MechanoidModifications</li>
    </thingCategories>
  </ThingDef>
</Defs>