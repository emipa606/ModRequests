<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- SERVITOR BRAIN CHIP -->

  <HediffDef ParentName="ImplantHediffBase">
    <defName>ServitorBrain</defName>
    <label>servitor brain implant</label>
    <labelNoun>a servitor brain implant</labelNoun>
    <description>An installed servitor brain implant.</description>
    <descriptionHyperlinks><ThingDef>ServitorBrain</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>ServitorBrain</spawnThingOnRemoved>
    <woundAnchorRange>0</woundAnchorRange>
    <displayWound>true</displayWound>
	<disablesNeeds>
		<li>Rest</li>
		<li>Joy</li>
		<li>Comfort</li>
	</disablesNeeds>
    <stages>
		<li>
			<statOffsets>
				<MentalBreakThreshold>-.99</MentalBreakThreshold>
				<PsychicSensitivity>-.99</PsychicSensitivity>
				<SocialImpact>-.99</SocialImpact>
				<SlaveSuppressionOffset>1</SlaveSuppressionOffset>
			</statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.10</offset>
          </li>
		  <li>
            <capacity>Talking</capacity>
            <offset>-1.20</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <ThingDef ParentName="BodyPartProstheticBase">
    <defName>ServitorBrain</defName>
    <label>servitor brain implant</label>
    <description>A horrific implant that erases the victim's personhood, turning them into a mindless servitor drone. On the plus side, it makes them a much better worker, if perhaps a bit on the slow side.</description>
    <descriptionHyperlinks><RecipeDef>InstallServitorBrain</RecipeDef></descriptionHyperlinks>
    <statBases>
      <MarketValue>3200</MarketValue>
      <Mass>0.3</Mass>
    </statBases>
	<recipeMaker>
      <researchPrerequisite>ServitorBrain</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>15</ComponentIndustrial>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>InstallServitorBrain</defName>
    <label>install servitor brain implant.</label>
    <description>Install a servitor brain implant.</description>
    <descriptionHyperlinks>
      <ThingDef>ServitorBrain</ThingDef>
      <HediffDef>ServitorBrain</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing servitor brain implant.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ServitorBrain</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ServitorBrain</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>ServitorBrain</addsHediff>
  </RecipeDef>

</Defs>
