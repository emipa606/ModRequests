<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>BiologicalSampleMarburg</defName>
    <label>Biological Sample (+Marbug)</label>
    <description>A biological sample of a patient.
It needs to be refrigerated to be stored.</description>
	<tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Item/sample</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <MarketValue>1.5</MarketValue>
      <Mass>0.005</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>4</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Drugs</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>20</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
      <li Class="CompProperties_Explosive">
        <explosiveDamageType>Smoke</explosiveDamageType>
        <explosiveRadius>1</explosiveRadius>
        <postExplosionSpawnThingDef>Filth_MarburgGerms</postExplosionSpawnThingDef>
        <postExplosionSpawnChance>1</postExplosionSpawnChance>
        <postExplosionSpawnThingCount>10</postExplosionSpawnThingCount>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
  </ThingDef>

