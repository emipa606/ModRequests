<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--========== HUMAN ==========-->
  <!--Marburg Germs -->
  <ThingDef ParentName="BaseFilth">
    <defName>Filth_MarburgGerms</defName>
    <label>marburg germs</label>
    <graphicData>
      <texPath>Filth/Blood</texPath>
      <color>(255,255,255,15)</color>
    </graphicData>
    <filth>
      <disappearsInDays>0.25</disappearsInDays>
      <cleaningWorkToReduceThickness>5</cleaningWorkToReduceThickness>
      <canFilthAttach>true</canFilthAttach>
    </filth>
	<statBases>
      <Beauty>0</Beauty>
      <Cleanliness>-1</Cleanliness>
    </statBases>
  </ThingDef>

