<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TerrainDef ParentName="FloorBase">
    <defName>FiredBrickFloor</defName>
    <label>fired brick flooring horizontal</label> 
	<designatorDropdown>Ceramics_FiredBrickFloor</designatorDropdown>
    <renderPrecedence>221</renderPrecedence>
    <description>Fired bricks laid to form a floor. Cheaper than stone bricks but prettier to look at than flagstone, they offer a nice compromise between cost, utility, and appearance.</description>
    <texturePath>Things/Terrain/LaidBrickRoad</texturePath>
    <statBases>
      <WorkToBuild>700</WorkToBuild>
      <Beauty>1</Beauty>
    </statBases>
    <researchPrerequisites>
      <li>BasicCeramics</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>2</constructionSkillPrerequisite>
    <costList>
      <N7_FiredBrick>4</N7_FiredBrick>
    </costList>	
  </TerrainDef>
  
  <TerrainDef ParentName="FloorBase">
    <defName>FiredBrickFloorVertical</defName>
