<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>CompositeAlloy</defName>
    <label>composite alloy</label>
    <description>A composite structure of several metal alloy mixtures, forming a very strong and durable panels.</description>
    <graphicData>
      <texPath>Things/Item/Composite</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>50</MarketValue>
      <Mass>0.6</Mass>
      <StuffPower_Armor_Sharp>2</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>2</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>1.2</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3.2</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0.5</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.1</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.05</BluntDamageMultiplier>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>30</minRewardCount>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>1</deepCommonality>
    <deepCountPerPortion>5</deepCountPerPortion>
    <deepLumpSizeRange>2~5</deepLumpSizeRange>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.1</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(70,70,84)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>8</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>0.1</Flammability>
      </statFactors>
    </stuffProps>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags><li>RewardStandardHighFreq</li></thingSetMakerTags>
  </ThingDef>

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_CompositeFlakVest</defName>
    <label>composite flak vest</label>
    <description>A flak vest made with composite alloys. Significantly increases its capabilities of stopping large caliber armour piercing bullets and against heat hazards.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>8000</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.50</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
      <ArmorRating_Heat>0.3</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.8</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Cloth>30</Cloth>
      <Steel>10</Steel>
      <CompositeAlloy>40</CompositeAlloy>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>(0.27,0.27,0.33)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

