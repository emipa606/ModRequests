<Patch>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<mods>
			<li>Core</li>
		</mods>
		<label>Hide sleeping spot names:</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="SleepingSpotBase"]/drawGUIOverlay</xpath>
				<value>
					<drawGUIOverlay>false</drawGUIOverlay>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<mods>
			<li>Core</li>
		</mods>
		<label>Hide animal sleeping spot names:</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="AnimalSleepingSpot"]/drawGUIOverlay</xpath>
				<value>
					<drawGUIOverlay>false</drawGUIOverlay>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>False</enabled>
		<mods>
			<li>Core</li>
		</mods>
		<label>Hide names for all beds:</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[thingClass="Building_Bed"]/drawGUIOverlay</xpath>
				<value>
					<drawGUIOverlay>false</drawGUIOverlay>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>