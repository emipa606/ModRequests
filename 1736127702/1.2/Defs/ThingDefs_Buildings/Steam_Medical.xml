<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>CarbolicAcidSprayer</defName>
    <label>carbolic acid sprayer</label>
    <description>Increases medical tend quality, and immunity gain speed when placed directly adjacent to an operating theatre table. Only works for operating theatre tables - other beds will not benefit. Attaching more than one carbolic acid sprayer to the same bed will have no effect.</description>
    <graphicData>
      <texPath>Things/Building/Medical/CarbolicAcidSprayer</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.30, 0.30, 0.30)</volume>
      </shadowData>
      <damageData>
        <rectN>(0.078125,0.46875,0.859375,0.53125)</rectN>
        <rectS>(0.078125,0.46875,0.859375,0.53125)</rectS>
        <rectE>(0.125,0.46875,0.625,0.296875)</rectE>
        <rectW>(0.25,0.46875,0.625,0.296875)</rectW>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
    </graphicData>
    <defaultPlacingRot>North</defaultPlacingRot>
    <researchPrerequisites><li>EarlyIndustrialMedicine</li></researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.2</fillPercent>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>6000</WorkToBuild>
      <Mass>20</Mass>
      <Flammability>0.7</Flammability>
    </statBases>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Woody</li>
      <li>Stony</li>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Steel>10</Steel>
      <CarbolicAcid>30</CarbolicAcid>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
    </building>
    <designationCategory>Steampunk</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <MedicalTendQualityOffset>0.05</MedicalTendQualityOffset>
          <ImmunityGainSpeedFactor>0.02</ImmunityGainSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <mustBePlacedAdjacent>true</mustBePlacedAdjacent>
      </li>
    </comps>
    <designationHotKey>Misc5</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <uiIconScale>0.85</uiIconScale>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>OperatingTheatreNotes</defName>
    <label>operating theatre notes</label>
    <description>Increases medical tend quality, and surgery success chance when placed directly adjacent to an operating theatre table. Only works for operating theatre tables - other beds will not benefit. Attaching more than one set of notes to the same bed will have no effect.</description>
    <graphicData>
      <texPath>Things/Building/Medical/OperatingTheatreNotes</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawRotated>false</drawRotated>
      <shadowData>
        <volume>(0.30, 0.30, 0.30)</volume>
      </shadowData>
      <damageData>
        <rectN>(0.078125,0.46875,0.859375,0.53125)</rectN>
        <rectS>(0.078125,0.46875,0.859375,0.53125)</rectS>
        <rectE>(0.125,0.46875,0.625,0.296875)</rectE>
        <rectW>(0.25,0.46875,0.625,0.296875)</rectW>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
    </graphicData>
    <defaultPlacingRot>North</defaultPlacingRot>
    <researchPrerequisites><li>EarlyIndustrialMedicine</li></researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.2</fillPercent>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>4000</WorkToBuild>
      <Mass>20</Mass>
      <Flammability>0.7</Flammability>
    </statBases>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Woody</li>
      <li>Stony</li>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <CaS_InkBerries>5</CaS_InkBerries>
      <CaS_Silk>20</CaS_Silk>
    </costList>
    <designationCategory>Steampunk</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <MedicalTendQualityOffset>0.03</MedicalTendQualityOffset>
          <SurgerySuccessChanceFactor>0.05</SurgerySuccessChanceFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <mustBePlacedAdjacent>true</mustBePlacedAdjacent>
      </li>
    </comps>
    <designationHotKey>Misc5</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <uiIconScale>0.85</uiIconScale>
  </ThingDef>

  <ThingDef ParentName="BedWithQualityBase">
    <defName>OperatingTheatreTable</defName>
    <label>operating theatre table</label>
    <description>A bed specially designed for use in an operating theatre. It improves medical outcomes over normal beds.</description>
    <graphicData>
      <texPath>Things/Building/Medical/OperatingTheatreTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <castEdgeShadows>True</castEdgeShadows>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>2800</WorkToBuild>
      <Mass>35</Mass>
      <Flammability>1.0</Flammability>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.60</Comfort>
      <ImmunityGainSpeedFactor>1.2</ImmunityGainSpeedFactor>
      <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
      <SurgerySuccessChanceFactor>1.10</SurgerySuccessChanceFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>CarbolicAcidSprayer</li>
          <li>OperatingTheatreNotes</li>
        </linkableFacilities>
      </li>
    </comps>
    <size>(1,2)</size>
    <stuffCategories>
      <li>Woody</li>
      <li>Stony</li>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <costList>
      <CaS_Silk>50</CaS_Silk>
    </costList>
    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>10</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
      <buildingSizeCategory>Small</buildingSizeCategory>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>42</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <designationCategory>Steampunk</designationCategory>
    <designationHotKey>Misc5</designationHotKey>
    <researchPrerequisites>
      <li>EarlyIndustrialMedicine</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <techLevel>Medieval</techLevel>
    <uiIconScale>0.90</uiIconScale>
  </ThingDef>

</Defs>