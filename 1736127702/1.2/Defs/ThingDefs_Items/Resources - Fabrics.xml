  <ThingDef ParentName="ResourceBase" Name="CaS_SilkBase" Abstract="True">
    <label>silk</label>
    <description>A fanciful fabric woven from silk thread.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Cloth</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(255, 255, 255)</color>
    </graphicData>
    <statBases>
      <StuffPower_Armor_Sharp>0.30</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.18</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>20</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>25</StuffPower_Insulation_Heat>
      <MaxHitPoints>40</MaxHitPoints>
      <MarketValue>2.0</MarketValue>
      <Mass>0.025</Mass>
      <Flammability>1.2</Flammability>
      <DeteriorationRate>4</DeteriorationRate>
    </statBases>
    <stuffProps>
      <statFactors>
        <Flammability>1.0</Flammability>
        <Beauty>5</Beauty>
      </statFactors>
      <categories>
        <li>Fabric</li>
      </categories>
      <color>(255, 255, 255)</color>
      <commonality>0.025</commonality>
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
  </ThingDef>

