<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<!-- Abstracts -->

	<RecipeDef  Name="Cas_DyeSilkBase" Abstract="True">
		<label>dye silk</label>
		<description>Dye silk to imbue it with alchemical properties.</description>
		<recipeUsers>
			<li>TableAlchemy</li>
			<li>TableChemistry</li>
		</recipeUsers>
		<jobString>dying silk.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<researchPrerequisite>Alchemy</researchPrerequisite>
		<skillRequirements>
			<Artistic>3</Artistic>
		</skillRequirements>
		<workSkill>Artistic</workSkill>
	</RecipeDef>

	<!-- Silks -->

	<RecipeDef ParentName="Cas_DyeSilkBase">
		<defName>DyeSilk_Night</defName>
		<label>dye silk (night)</label>
		<products>
				<CaS_NightSilk>50</CaS_NightSilk>
		</products>
		<ingredients>
			<li>
				<filter>
				<thingDefs>
				<li>CaS_Silk</li>
				</thingDefs>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
				<thingDefs>
				<li>CaS_InkBerries</li>
				</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
	</RecipeDef>

