<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorSmithableBase">
    <defName>Apparel_DivingHelm</defName>
    <label>diving helm</label>
    <description>A large bronze diving helm. It's internal oxygen supply helps protect against toxic materials. It also provides some armour.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Apparel/DivingHelm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costList>
      <CaS_Brass>20</CaS_Brass>
      <CaS_Bronze>50</CaS_Bronze>
      <SapphireLens>5</SapphireLens>
      <RivetedLeather>20</RivetedLeather>
    </costList>
    <uiIconScale>1</uiIconScale>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToMake>10000</WorkToMake>
      <Mass>6</Mass>
      <Flammability>0.0</Flammability>
      <ArmorRating_Sharp>1.2</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.2</ArmorRating_Blunt>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ToxicSensitivity>-0.40</ToxicSensitivity>
      <PsychicSensitivity>-0.20</PsychicSensitivity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <wornGraphicPath>Things/Apparel/DivingHelm</wornGraphicPath>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>SteamPower</researchPrerequisite>
      <recipeUsers>
        <li>TableClockwork</li>
        <li>TableSteam</li>
        <li>TableTesla</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

