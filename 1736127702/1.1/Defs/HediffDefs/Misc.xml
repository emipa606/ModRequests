<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>Shocked</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <label>shocked</label>
    <description>An electric shock which leads to a total inability to function. The victim may collapse at higher severity, or die.</description>
    <lethalSeverity>1</lethalSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-6.0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>tweaked</label>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>tazed</label>
        <painOffset>0.5</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>stunned</label>
        <painOffset>1</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.7</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.9</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-1.0</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.9</minSeverity>
        <label>electrocution</label>
        <lifeThreatening>true</lifeThreatening>
        <painOffset>1</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.9</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-1</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.9</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-1.0</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>