<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>Plant_FireLily</defName>
    <label>fire lily</label>
    <description>An alchemically imbued plant that produces vibrant flowers with ardent properties.</description>
    <statBases>
      <MaxHitPoints>30</MaxHitPoints>
      <Beauty>25</Beauty>
      <Nutrition>0.2</Nutrition>
      <Flammability>0</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Item/FireLily</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <drawSize>0.70</drawSize>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <plant>
			<growDays>10</growDays>
			<dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>CaS_FlameLily</harvestedThingDef>
      <harvestYield>3</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
        <li>Hydroponic</li>
      </sowTags>
	    <sowMinSkill>5</sowMinSkill>
		  <sowResearchPrerequisites>
		  	<li>Alchemy</li>
	  	</sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.05</visualSizeRange>
    </plant>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(252,0,20,0.5)</glowColor>
      </li>
    </comps>
 </ThingDef>

</Defs>
