<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TraitDef>
    <defName>Clockmaker</defName>
    <degreeDatas>
      <li>
        <label>clockmaker</label>
		<commonality>0.2</commonality>
        <description>{PAWN_nameDef} has become a renouned clockmaker. {PAWN_pronoun} excels at creating mechnical devices.</description>
        <statOffsets>
          <GlobalLearningFactor>0.25</GlobalLearningFactor>
          <MentalBreakThreshold>0.05</MentalBreakThreshold>
        </statOffsets>
		<skillGains>
          <li>
            <key>Intellectual</key>
            <value>2</value>
          </li>
          <li>
            <key>Crafting</key>
            <value>4</value>
          </li>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Alchemist</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Intellectual</li>
	  <li>Crafting</li>
    </requiredWorkTags>
  </TraitDef>

  <TraitDef>
    <defName>Alchemist</defName>
    <degreeDatas>
      <li>
        <label>alchemist</label>
		<commonality>0.1</commonality>
        <description>{PAWN_nameDef} has become a renouned alchemist. {PAWN_pronoun} excels at alchemy.</description>
        <statOffsets>
          <GlobalLearningFactor>0.30</GlobalLearningFactor>
          <MentalBreakThreshold>0.15</MentalBreakThreshold>
        </statOffsets>
		<skillGains>
          <li>
            <key>Plants</key>
            <value>2</value>
          </li>
		  <li>
            <key>Intellectual</key>
            <value>4</value>
          </li>
          <li>
            <key>Crafting</key>
            <value>1</value>
          </li>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Clockmaker</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Intellectual</li>
	  <li>Crafting</li>
	  <li>PlantWork</li>
    </requiredWorkTags>
  </TraitDef>

  <TraitDef>
    <defName>LivingAutomaton</defName>
	<ignoreConfigErrors>true</ignoreConfigErrors>
    <commonality>0</commonality>
    <degreeDatas>
      <li>
        <label>living automaton</label>
        <description>{PAWN_nameDef} feels limited in {PAWN_possessive} feeble human body. {PAWN_pronoun} often dreams of being enhanced by clockwork body parts.</description>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>BodyPurist</li>
    </conflictingTraits>
  </TraitDef>

</Defs>
