<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="RockBase">
    <defName>CaS_MineableCopper</defName>
    <label>copper ore</label>
    <description>Rock containing bits of copper.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(100,100,50)</color>
      <colorTwo>(230,150,0)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1200</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>CaS_Copper</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.5</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>4</min>
        <max>12</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

