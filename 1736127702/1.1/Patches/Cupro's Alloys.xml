		<!-- Remove CaS Resources -->
	
		<li Class="PatchOperationRemove">
	    <xpath>/Defs/ThingDef[defName = "CaS_MineableCopper"]</xpath>
		</li>

		<li Class="PatchOperationRemove">
	    <xpath>/Defs/ThingDef[defName = "CaS_MineableTin"]</xpath>
		</li>

		<li Class="PatchOperationRemove">
	    <xpath>/Defs/ThingDef[defName = "CaS_MineableZinc"]</xpath>
		</li>
		
		</operations>
		</match>
	</Operation>

</Patch>
