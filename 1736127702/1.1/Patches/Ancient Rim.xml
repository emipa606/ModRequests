<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ancient Rim - core</li>
		</mods>
		
		<match Class="PatchOperationSequence">
		<operations>
		
		<!-- Add CaS Resource Recipes -->
		
		<li Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>
				<RecipeDef>
					<defName>RefineCopper</defName>
					<recipeUsers>
						<li>ElectricSmelter</li>
						<li>Forge</li>
						<li>AR_Smelter</li>
					</recipeUsers>
					<label>Refine copper</label>
					<description>Refine copper for advanced use.</description>
					<jobString>Refining copper</jobString>
					<workAmount>50</workAmount>
					<workSpeedStat>SmeltingSpeed</workSpeedStat>
					<effectWorking>Smelt</effectWorking>
					<soundWorking>Recipe_Smelt</soundWorking>
					<researchPrerequisite>Clockwork</researchPrerequisite>
					<products>
						<CaS_Copper>15</CaS_Copper>
					</products>
					<ingredients>
						<li>
							<filter>
							<thingDefs>
							<li>AR_Copper</li>
							</thingDefs>
							</filter>
							<count>15</count>
						</li>
					</ingredients>
				</RecipeDef>
			</value>
		</li>
		
		<li Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>
				<RecipeDef>
					<defName>RefineBronze</defName>
					<recipeUsers>
						<li>ElectricSmelter</li>
						<li>Forge</li>
						<li>AR_Smelter</li>
					</recipeUsers>
					<label>Refine bronze</label>
					<description>Refine bronze for advanced use.</description>
					<jobString>Refining bronze</jobString>
					<workAmount>50</workAmount>
					<workSpeedStat>SmeltingSpeed</workSpeedStat>
					<effectWorking>Smelt</effectWorking>
					<soundWorking>Recipe_Smelt</soundWorking>
					<researchPrerequisite>Clockwork</researchPrerequisite>
					<products>
						<CaS_Copper>15</CaS_Copper>
					</products>
					<ingredients>
						<li>
							<filter>
							<thingDefs>
							<li>AR_Bronze</li>
							</thingDefs>
							</filter>
							<count>15</count>
						</li>
					</ingredients>
				</RecipeDef>
			</value>
		</li>
		
		<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "AR_Smelter"]/recipes</xpath>
			<value>
				<li>CastBrass</li>
				<li>CastBronze</li>
			</value>
		</li>

		<!-- Add Inverse CaS Resource Recipes -->
		
				<li Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>
				<RecipeDef>
					<defName>RevertCopper</defName>
					<recipeUsers>
						<li>ElectricSmelter</li>
						<li>Forge</li>
					</recipeUsers>
					<label>Revert copper</label>
					<description>Revert copper for regular use.</description>
					<jobString>Reverting copper</jobString>
					<workAmount>50</workAmount>
					<workSpeedStat>SmeltingSpeed</workSpeedStat>
					<effectWorking>Smelt</effectWorking>
					<soundWorking>Recipe_Smelt</soundWorking>
					<researchPrerequisite>Clockwork</researchPrerequisite>
					<products>
						<AR_Copper>15</AR_Copper>
					</products>
					<ingredients>
						<li>
							<filter>
							<thingDefs>
							<li>CaS_Copper</li>
							</thingDefs>
							</filter>
							<count>15</count>
						</li>
					</ingredients>
				</RecipeDef>
			</value>
		</li>
		
		<li Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>
				<RecipeDef>
					<defName>RevertBronze</defName>
					<recipeUsers>
						<li>ElectricSmelter</li>
						<li>Forge</li>
					</recipeUsers>
					<label>Revert bronze</label>
					<description>Revert bronze for regular use.</description>
					<jobString>Reverting bronze</jobString>
					<workAmount>50</workAmount>
					<workSpeedStat>SmeltingSpeed</workSpeedStat>
					<effectWorking>Smelt</effectWorking>
					<soundWorking>Recipe_Smelt</soundWorking>
					<researchPrerequisite>Clockwork</researchPrerequisite>
					<products>
						<AR_Bronze>15</AR_Bronze>
					</products>
					<ingredients>
						<li>
							<filter>
							<thingDefs>
							<li>CaS_Copper</li>
							</thingDefs>
							</filter>
							<count>15</count>
						</li>
					</ingredients>
				</RecipeDef>
			</value>
		</li>
		
		<!-- Remove CaS Resources -->

		<li Class="PatchOperationFindMod">
                <mods>
                    <li>Cupro's Alloys (Continued)</li>
                </mods>
                <nomatch Class="PatchOperationRemove">
	 				<xpath>/Defs/ThingDef[defName = "CaS_MineableCopper"]</xpath>
                </nomatch>
            </li>
		
		</operations>
		</match>
	</Operation>

</Patch>
