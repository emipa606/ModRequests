<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<RecipeDef>
		<defName>CastBrass</defName>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
		<label>Cast brass alloy</label>
		<description>Casts brass alloy from copper and zinc.</description>
		<jobString>Casting brass alloy.</jobString>
		<workAmount>500</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<researchPrerequisite>Clockwork</researchPrerequisite>
		<products>
				<CaS_Brass>15</CaS_Brass>
		</products>
		<ingredients>
			<li>
				<filter>
				<thingDefs>
				<li>CaS_Copper</li>
				</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
				<thingDefs>
				<li>CaS_Zinc</li>
				</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
	
