<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>Plant_Inkleaf</defName>
    <label>inkleaf plant</label>
    <description>An alchemically imbued plant that produces dark fibres suitable for clothing. Grows slightly quicker than cotton.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Item/Inkleaf</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <drawSize>0.70</drawSize>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <plant>
			<growDays>6</growDays>
			<dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>InkedCloth</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
	  <sowMinSkill>5</sowMinSkill>
		<sowResearchPrerequisites>
			<li>AlchemicalPlants</li>
		</sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
 </ThingDef>

</Defs>
