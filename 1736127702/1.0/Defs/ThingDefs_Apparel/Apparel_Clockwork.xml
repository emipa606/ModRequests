<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Class="Clockwork.ThingDef_FancyApparel" ParentName="ApparelMakeableBase">
    <defName>Apparel_Tailcoat</defName>
    <label>tailcoat</label>
    <description>A delightful tailcoat.</description>
	<recipeMaker>
      <researchPrerequisite>FancyClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Tailcoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>1.8</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.90</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.30</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
	    <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Tailcoat</wornGraphicPath>
      <layers>
        <li>OverVest</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>15</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.5,0.5,0.5)</min>
          <max>(1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
	<fancyMoodlet>true</fancyMoodlet>
  </ThingDef>
  
  <ThingDef Class="Clockwork.ThingDef_FancyApparel" ParentName="ApparelMakeableBase">
    <defName>Apparel_SapphireRing</defName>
    <label>sapphire ring</label>
    <description>A rather grand ring.</description>
	<recipeMaker>
      <researchPrerequisite>Jewelry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
	  <effectWorking>Smith</effectWorking>
	  <soundWorking>Recipe_Machining</soundWorking>
	  <recipeUsers>
		<li>TableClockwork</li>
	  </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/SRing</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
	<costList>
      <CaS_Sapphire>3</CaS_Sapphire>
      <Silver>2</Silver>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>0.2</Mass>
      <StuffEffectMultiplierArmor>0.03</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.02</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.01</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
	    <li>LeftHand</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
	<grandMoodlet>true</grandMoodlet>
  </ThingDef>
  
</Defs>
