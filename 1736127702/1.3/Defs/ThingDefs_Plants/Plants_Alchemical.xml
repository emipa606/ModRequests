<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>Plant_SilkBush</defName>
    <label>silk bush</label>
    <description>An alchemically imbued plant infested with various critters that produce silk. Grows slower than cotton.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Item/SilkBush</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>0.70</drawSize>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <plant>
      <growDays>12</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>CaS_Silk</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <sowMinSkill>5</sowMinSkill>
      <sowResearchPrerequisites>
        <li>Alchemy</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.05</visualSizeRange>
    </plant>
  </ThingDef>

