<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>AlchemicalFrost</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>alchemical frost</label>
    <description>The cool effects of an alchemical mixture.</description>
    <defaultLabelColor>(150, 180, 180)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-6.0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>chilly</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>frosted</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.9</minSeverity>
        <label>slushed</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.8</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-1.0</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>AlchemicalInk</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>alchemical ink</label>
    <description>The harrowing effects of an alchemical mixture.</description>
    <defaultLabelColor>(30, 30, 50)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-6.0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <painFactor>1.05</painFactor>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>