<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
    <defName>MeleeWeapon_SteamHammer</defName>
    <label>steam hammer</label>
    <techLevel>Medieval</techLevel>
    <description>A mechanical hammer used to assist in construction. It packs a rather explosive punch, making it a lovely weapon.</description>
    <graphicData>
      <texPath>Things/Weapon/SteamHammer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <weaponTags>
      <li>MedievalMeleeBasic</li>
    </weaponTags>
    <costList>
      <WoodLog>10</WoodLog>
      <Steel>10</Steel>
      <CaS_Bronze>40</CaS_Bronze>
      <BrassGears>3</BrassGears>
      <BrassPiston>2</BrassPiston>
    </costList>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <Mass>3</Mass>
    </statBases>
    <equippedStatOffsets>
      <ConstructionSpeed>0.75</ConstructionSpeed> <!-- Buffed from .20 -->
    </equippedStatOffsets>
    <burnableByRecipe>false</burnableByRecipe>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>hammer</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>25</power>
        <cooldownTime>3</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <recipeUsers>
        <li>TableSteam</li>
      </recipeUsers>
      <researchPrerequisite>SteamworkWeapons</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

