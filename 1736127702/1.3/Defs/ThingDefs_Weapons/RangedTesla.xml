<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseBullet">
  <!-- Class="Clockwork.ThingDef_TeslaShot"  -->
    <defName>Bullet_TeslaShot</defName>
    <label>tesla bullet</label>
    <projectile>
      <stoppingPower>1.5</stoppingPower>
      <speed>70</speed>
      <damageAmountBase>1</damageAmountBase>
      <damageDef>ElectrostaticBullet</damageDef>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Electro</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <!-- <AddHediffChance>.7</AddHediffChance>
    <HediffToAdd>Shocked</HediffToAdd> -->
    <!-- <thingClass>Clockwork.Projectile_TeslaShot</thingClass> -->
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_ElectrostaticRifle</defName>
    <label>electrostatic rifle</label>
    <description>A specialised weapon that shoots electrified bullets.</description>
    <graphicData>
      <texPath>Things/Weapon/ElectrostaticRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.2</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>6</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <CaS_Bronze>60</CaS_Bronze>
      <Gold>1</Gold>
      <SapphireLens>2</SapphireLens>
      <SteelSpring>1</SteelSpring>
      <ElectronicComponent>2</ElectronicComponent>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>TableTesla</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <researchPrerequisite>GalvanomagneticWeapons</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_TeslaShot</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>38</range>
        <soundCast>Shot_BoltActionRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>bayonet</label>
        <capacities>
          <li>Stab</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Raygun</defName>
    <label>ruby ray</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Raygun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Burn</damageDef>
      <damageAmountBase>14</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_Raygun</defName>
    <label>ruby raygun</label>
    <description>A complex little weapon that produces intense blasts of light. Causes severe burns.</description>
    <graphicData>
      <texPath>Things/Weapon/Raygun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>1.6</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <CaS_Bronze>30</CaS_Bronze>
      <Silver>2</Silver>
      <RubyLens>3</RubyLens>
      <ElectronicComponent>1</ElectronicComponent>
      <CaS_FlameFlask>5</CaS_FlameFlask>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>TableTesla</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <researchPrerequisite>GalvanomagneticWeapons</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Raygun</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>25</range>
        <soundCast>Shot_Raygun</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>
