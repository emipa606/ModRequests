<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_BladedCane</defName>
    <label>bladed cane</label>
    <techLevel>Medieval</techLevel>
    <description>A fancy cane carried by the elite and wealthy. This particular model includes a blade for self defence.</description>
    <graphicData>
      <texPath>Things/Weapon/BladedCane</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <uiIconScale>1.2</uiIconScale>
    <weaponTags>
      <li>MedievalMeleeBasic</li>
    </weaponTags>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costList>
      <WoodLog>20</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <Mass>1.5</Mass>
    </statBases>
    <equippedStatOffsets>
      <MentalBreakThreshold>0.05</MentalBreakThreshold>
      <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <burnableByRecipe>false</burnableByRecipe>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>14</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <recipeUsers>
        <li>TableClockwork</li>
      </recipeUsers>
      <researchPrerequisite>ClockworkWeapons</researchPrerequisite>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_CircularSaw</defName>
    <label>circular saw</label>
    <techLevel>Medieval</techLevel>
    <description>A mechanical saw used to assist in construction and horticulture. It also makes for quite a weapon.</description>
    <graphicData>
      <texPath>Things/Weapon/CircularSaw</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.2</uiIconScale>
    <weaponTags>
      <li>MedievalMeleeBasic</li>
    </weaponTags>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <costList>
      <WoodLog>5</WoodLog>
      <Steel>20</Steel>
      <CaS_Brass>20</CaS_Brass>
      <BrassGears>3</BrassGears>
    </costList>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <Mass>1.5</Mass>
    </statBases>
    <equippedStatOffsets>
      <PlantWorkSpeed>0.50</PlantWorkSpeed> <!-- Buffed from .10 -->
      <ConstructionSpeed>0.20</ConstructionSpeed> <!-- Buffed from .10 -->
    </equippedStatOffsets>
    <burnableByRecipe>false</burnableByRecipe>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>3</power>
        <cooldownTime>0.3</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <recipeUsers>
        <li>TableClockwork</li>
      </recipeUsers>
      <researchPrerequisite>ClockworkWeapons</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

</Defs>
