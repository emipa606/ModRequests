<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Class="Clockwork.ThingDef_FancyApparel" ParentName="HatMakeableBase">
    <defName>Apparel_MasqueradeMask</defName>
    <label>masquerade mask</label>
    <description>An elaborate mask worn for social occasions. Its ornate nature provides particular effects.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Apparel/MasqueradeMaskIcon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Woody</li>
      <li>Metallic</li>
    </stuffCategories>
    <uiIconScale>1.15</uiIconScale>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.07</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.07</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MentalBreakThreshold>0.05</MentalBreakThreshold>
      <SocialImpact>0.15</SocialImpact>
      <PsychicSensitivity>0.10</PsychicSensitivity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/MasqueradeMask</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>Clockwork</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>TableClockwork</li>
        <li>TableSteam</li>
        <li>TableTesla</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>2</Crafting>
        <Artistic>4</Artistic>
      </skillRequirements>
    </recipeMaker>
    <fanciness>0.25</fanciness>
  </ThingDef>

  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_ArtificerMask</defName>
    <label>artificer's mask</label>
    <description>An artistic mask designed to assist an artificer in research. Its ornate nature provides other effects.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Apparel/ArtificerMaskIcon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costList>
      <CaS_Brass>30</CaS_Brass>
	    <BrassGears>1</BrassGears>
      <SapphireLens>3</SapphireLens>
    </costList>
    <uiIconScale>1.15</uiIconScale>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>1.4</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ResearchSpeed>0.10</ResearchSpeed>
      <SocialImpact>0.10</SocialImpact>
      <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
      <PsychicSensitivity>0.05</PsychicSensitivity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/ArtificerMask</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>LensCutting</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>TableClockwork</li>
        <li>TableSteam</li>
        <li>TableTesla</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="ArmorSmithableBase">
    <defName>Apparel_ClockworkExoskeleton</defName>
    <label>clockwork exoskeleton</label>
    <description>A clockwork exoskeleton that improves your speed and carrying capacity. Also serves as armour against blunt attacks.</description>
	  <recipeMaker>
      <researchPrerequisite>Clockwork</researchPrerequisite>
      <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
      <recipeUsers>
        <li>TableClockwork</li>
        <li>TableSteam</li>
        <li>TableTesla</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/ClockworkExoskeleton</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <costList>
      <CaS_Bronze>60</CaS_Bronze>
      <SteelSpring>2</SteelSpring>
	    <BrassGears>2</BrassGears>
      <RubyLens>1</RubyLens>
    </costList>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>10000</WorkToMake>
      <Mass>4</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.25</MoveSpeed> <!-- Changed from 0.10 -->
      <CarryingCapacity>20</CarryingCapacity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
	      <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/ClockworkExoskeleton</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
</Defs>
