<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="SculptureBase">
    <defName>PipeOrgan</defName>
    <label>pipe organ</label>
    <description>An advanced stationary musical instrument. It is played by pressing a row of keys, which causes air to flow through a series of pipes tuned to different notes. This grand instrument is quite elaborate and can be incredibly loud.\n\nIt can be crafted at a smithy.</description>
    <graphicData>
      <texPath>Things/Building/PipeOrgan</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
	    <shaderType>CutoutComplex</shaderType>
      <drawSize>(3.0,3.0)</drawSize>
      <drawOffset>(0,0,0.5)</drawOffset>
      <shadowData>
        <volume>(2.2, 0.4, 0.8)</volume>
        <offset>(0, 0, 0.1)</offset>
      </shadowData>
    </graphicData>
    <canOverlapZones>false</canOverlapZones>
    <defaultPlacingRot>North</defaultPlacingRot>
    <fillPercent>0.90</fillPercent>
    <size>(3,2)</size>
    <minTechLevelToBuild>Medieval</minTechLevelToBuild>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToMake>105000</WorkToMake>
      <Mass>80</Mass>
      <Flammability>0.5</Flammability>
      <Beauty>500</Beauty>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>600</costStuffCount>
    <costList>
      <CaS_Brass>50</CaS_Brass>
      <RivetedLeather>30</RivetedLeather>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>10</Crafting>
        <Artistic>4</Artistic>
      </skillRequirements>
      <researchPrerequisite>PipeOrgan</researchPrerequisite>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
        <li>TableSteam</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

