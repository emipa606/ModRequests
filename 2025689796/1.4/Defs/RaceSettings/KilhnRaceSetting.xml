<Defs>

  <LifeStageDef>
    <defName>KilhnHatchling</defName>
    <label>Hatchling</label>
    <adjective>hatchling</adjective>
    <bodySizeFactor>0.2</bodySizeFactor>
	<foodMaxFactor>1.5</foodMaxFactor>
	<healthScaleFactor>0.2</healthScaleFactor>
    <hungerRateFactor>0.2</hungerRateFactor>
    <marketValueFactor>0.5</marketValueFactor>
    <meleeDamageFactor>0.5</meleeDamageFactor>
    <canSleepWhileHeld>true</canSleepWhileHeld>
    <bodyDrawOffset>(0, 0, -0.03)</bodyDrawOffset>
    <canInitiateSocialInteraction>false</canInitiateSocialInteraction>
    <developmentalStage>Child</developmentalStage>
    <canSleepWhenStarving>false</canSleepWhenStarving>
    <thinkTreeMainOverride MayRequire="Ludeon.RimWorld.Biotech">KilhnBaby</thinkTreeMainOverride>
    <thinkTreeConstantOverride MayRequire="Ludeon.RimWorld.Biotech">KilhnBabyConstant</thinkTreeConstantOverride>
    <canDoRandomMentalBreaks>false</canDoRandomMentalBreaks>
    <claimable>true</claimable>
    <statFactors>
      <MoveSpeed>1.5</MoveSpeed>
    </statFactors>
  </LifeStageDef>

  <LifeStageDef>
    <defName>KilhnWyrmling</defName>
    <label>Wyrmling</label>
    <adjective>wyrmling</adjective>
    <workerClass MayRequire="Ludeon.RimWorld.Biotech">LifeStageWorker_HumanlikeChild</workerClass>
    <bodySizeFactor>0.32</bodySizeFactor>
	<foodMaxFactor>1.5</foodMaxFactor>
    <developmentalStage>Child</developmentalStage>
    <bodyDrawOffset>(0, 0, -0.1)</bodyDrawOffset>
    <equipmentDrawDistanceFactor>0.55</equipmentDrawDistanceFactor>
	<healthScaleFactor>0.4</healthScaleFactor>
    <hungerRateFactor>0.4</hungerRateFactor>
    <marketValueFactor>0.7</marketValueFactor>
    <meleeDamageFactor>0.6</meleeDamageFactor>
    <statFactors>
      <MoveSpeed>1.35</MoveSpeed>
    </statFactors>
  </LifeStageDef>

  <LifeStageDef>
    <defName>KilhnDrake</defName>
    <label>Drake</label>
    <adjective>drake</adjective>
    <bodySizeFactor>0.5</bodySizeFactor>
    <healthScaleFactor>0.5</healthScaleFactor>
    <hungerRateFactor>0.6</hungerRateFactor>
    <developmentalStage>Child</developmentalStage>
    <bodyDrawOffset>(0, 0, -0.1)</bodyDrawOffset>
    <equipmentDrawDistanceFactor>0.55</equipmentDrawDistanceFactor>
    <marketValueFactor>0.9</marketValueFactor>
    <meleeDamageFactor>0.7</meleeDamageFactor>
    <sittingOffset>0.3</sittingOffset>
    <statFactors>
      <MoveSpeed>1.15</MoveSpeed>
    </statFactors>
  </LifeStageDef>

  <LifeStageDef>
    <defName>KilhnAdult</defName>
    <label>Adult</label>
    <workerClass MayRequire="Ludeon.RimWorld.Biotech">LifeStageWorker_HumanlikeAdult</workerClass>
    <!--adjective>teenage</adjective-->
	<visible>false</visible>
    <reproductive>true</reproductive>
    <bodySizeFactor>1</bodySizeFactor>
	<foodMaxFactor>1.1</foodMaxFactor>
    <hungerRateFactor>0.9</hungerRateFactor>
    <healthScaleFactor>1</healthScaleFactor>
    <meleeDamageFactor>1</meleeDamageFactor>
    <statFactors>
      <MoveSpeed>0.95</MoveSpeed>
    </statFactors>
  </LifeStageDef>
  
  <LifeStageDef>
    <defName>KilhnAncient</defName>
    <label>Ancient</label>
	<adjective>ancient</adjective>
    <workerClass MayRequire="Ludeon.RimWorld.Biotech">LifeStageWorker_HumanlikeAdult</workerClass>
    <visible>false</visible>
    <reproductive>true</reproductive>
	<bodySizeFactor>1</bodySizeFactor>
	<foodMaxFactor>1.15</foodMaxFactor>
    <hungerRateFactor>0.80</hungerRateFactor>
    <healthScaleFactor>1.20</healthScaleFactor>
    <meleeDamageFactor>1.20</meleeDamageFactor>
    <statFactors>
      <MoveSpeed>1</MoveSpeed>
    </statFactors>
  </LifeStageDef>

