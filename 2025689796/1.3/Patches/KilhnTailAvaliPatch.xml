<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Avali</li>
		</mods>
        
        <match Class="PatchOperationSequence">
            <operations>
            
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<RecipeDef ParentName="SurgeryFlesh">
							<defName>InstallBioKilhnTAvali</defName>
							<label>instal bionic kilhn tail</label>
							<description>Instal bionic kilhn tail.</description>
							<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
							<jobString>Installing kilhn bionic tail.</jobString>
							<workAmount>3000</workAmount>
							<skillRequirements>
								<Medicine>10</Medicine>
							</skillRequirements>
                            <recipeUsers>
                                <li>Avali</li>
                            </recipeUsers>
							<ingredients>
								<li>
									<filter>
										<categories>
											<li>Medicine</li>
										</categories>
									</filter>
									<count>2</count>
								</li>
								<li>
									<filter>
										<thingDefs>
											<li>KBionicKilhnTail</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<categories>
									<li>Medicine</li>
								</categories>
								<thingDefs>
									<li>KBionicKilhnTail</li>
								</thingDefs>
							</fixedIngredientFilter>
							<appliedOnFixedBodyParts>
								<li>TailAvali</li>
							</appliedOnFixedBodyParts>
							<addsHediff>BionicKilhnTail</addsHediff>
						</RecipeDef>
                        
						<RecipeDef ParentName="SurgeryFlesh">
							<defName>InstallArcKilhnTAvali</defName>
							<label>instal archotech kilhn tail</label>
							<description>Instal archotech kilhn tail.</description>
							<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
							<jobString>Installing kilhn archotech tail.</jobString>
							<workAmount>3000</workAmount>
							<skillRequirements>
								<Medicine>10</Medicine>
							</skillRequirements>
                            <recipeUsers>
                                <li>Avali</li>
                            </recipeUsers>
							<ingredients>
								<li>
									<filter>
										<categories>
											<li>Medicine</li>
										</categories>
									</filter>
									<count>2</count>
								</li>
								<li>
									<filter>
										<thingDefs>
											<li>KArchotechKilhnTail</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<categories>
									<li>Medicine</li>
								</categories>
								<thingDefs>
									<li>KArchotechKilhnTail</li>
								</thingDefs>
							</fixedIngredientFilter>
							<appliedOnFixedBodyParts>
								<li>TailAvali</li>
							</appliedOnFixedBodyParts>
							<addsHediff>ArchotechKilhnTail</addsHediff>
						</RecipeDef>
                        
					</value>
				</li>
                
            </operations>
		</match>
    </Operation>
</Patch>