<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Archotech Expanded</li>
		</mods>
        
        <match Class="PatchOperationSequence">
            <operations>
            
                <li Class="PatchOperationInsert">
                    <xpath>*/ThingDef[defName = "KArchotechKiArm"]/statBases</xpath>
                    <value>
                    <recipeMaker>
                        <skillRequirements>
                            <Crafting>15</Crafting>
                        </skillRequirements>
                        <researchPrerequisite>ArchotechMimicry</researchPrerequisite>
                        <recipeUsers>
                            <li>BasicArchotechWorkbench</li>
                        </recipeUsers>
                    </recipeMaker>
                    <costList>
                    <Nanomachinery>10</Nanomachinery>
                    <Picomachinery>10</Picomachinery>
                    <Silver>50</Silver>
                    </costList>
                    </value>	
                </li>
                
                <li Class="PatchOperationInsert">
                    <xpath>*/ThingDef[defName = "KArchotechKilhnTail"]/statBases</xpath>
                    <value>
                    <recipeMaker>
                        <skillRequirements>
                            <Crafting>15</Crafting>
                        </skillRequirements>
                        <researchPrerequisite>ArchotechMimicry</researchPrerequisite>
                        <recipeUsers>
                            <li>BasicArchotechWorkbench</li>
                        </recipeUsers>
                    </recipeMaker>
                    <costList>
                    <Nanomachinery>10</Nanomachinery>
                    <Picomachinery>10</Picomachinery>
                    <Silver>50</Silver>
                    </costList>
                    </value>	
                </li>
                
            </operations>
		</match>
    </Operation>
</Patch>