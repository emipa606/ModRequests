<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <InteractionDef>
        <defName>DIL_Mediation</defName>
        <workerClass>DIL_PositiveConnections.InteractionWorker_Mediation</workerClass>
        <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
        <logRulesInitiator>
            <rulesStrings>
                <li>r_logentry->I mediated a conflict involving [RECIPIENT_nameDef].</li>
            </rulesStrings>
        </logRulesInitiator>
        <logRulesRecipient>
            <rulesStrings>
                <li>r_logentry->[INITIATOR_nameDef] mediated a conflict I was involved in.</li>
            </rulesStrings>
        </logRulesRecipient>
    </InteractionDef>
    <InteractionDef>
        <defName>DIL_Compliment</defName>
        <workerClass>DIL_PositiveConnections.InteractionWorker_Compliment</workerClass>
        <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
        <logRulesInitiator>
            <rulesStrings>
                <li>r_logentry->I complimented [RECIPIENT_nameDef].</li>
            </rulesStrings>
        </logRulesInitiator>
        <logRulesRecipient>
            <rulesStrings>
                <li>r_logentry->[INITIATOR_nameDef] complimented me. I feel validated.</li>
            </rulesStrings>
        </logRulesRecipient>
    </InteractionDef>
    <InteractionDef>
        <defName>DIL_SkillShare</defName>
        <workerClass>DIL_PositiveConnections.InteractionWorker_SkillShare</workerClass>
        <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
        <logRulesInitiator>
            <rulesStrings>
                <li>r_logentry->[INITIATOR_nameDef] talked with [RECIPIENT_nameDef] and shared [INITIATOR_possessive] knowledge.</li>
            </rulesStrings>
        </logRulesInitiator>
    </InteractionDef>
    <InteractionDef>
        <defName>DIL_DiscussIdeoligion</defName>
        <label>discuss ideoligion</label>
        <description>Pawns discussing their shared ideoligion.</description>
        <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
        <interactionMote>Mote_Speech</interactionMote>
        <initiatorThought>DIL_IdeologicalDiscussion</initiatorThought>
        <recipientThought>DIL_IdeologicalDiscussion</recipientThought>
        <logRulesInitiator>
            <rulesStrings>
                <li>r_logentry->I had a thoughtful discussion about our ideoligion with [RECIPIENT_nameDef]. It was enlightening.</li>
            </rulesStrings>
        </logRulesInitiator>
        <logRulesRecipient>
            <rulesStrings>
                <li>r_logentry->[INITIATOR_nameDef] and I had a deep conversation about our ideoligion. I feel a sense of belonging.</li>
            </rulesStrings>
        </logRulesRecipient>
    </InteractionDef>
    <InteractionDef>
        <defName>DIL_GiveGift</defName>
        <workerClass>DIL_PositiveConnections.InteractionWorker_Gift</workerClass>
        <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
        <logRulesInitiator>
            <rulesStrings>
                <li>r_logentry->I gave a small gift to [RECIPIENT_nameDef].</li>
            </rulesStrings>
        </logRulesInitiator>
        <logRulesRecipient>
            <rulesStrings>
                <li>r_logentry->[INITIATOR_nameDef] gave me a gift.</li>
            </rulesStrings>
        </logRulesRecipient>
    </InteractionDef>

