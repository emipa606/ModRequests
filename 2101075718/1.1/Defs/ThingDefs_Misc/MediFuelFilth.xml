<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseFilth">
		<defName>Filth_MediFuel</defName>

		<label>medifuel puddle</label>
		<description>A puddle of flammable medifuel.</description>

		<thingClass>LiquidFuel</thingClass>
		<useHitPoints>true</useHitPoints>
		<tickerType>Normal</tickerType>
		<statBases>
			<Beauty>-8</Beauty>
			<Cleanliness>-15</Cleanliness>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>2.0</Flammability>
		</statBases>

		<graphicData>
			<texPath>Things/Filth/LiquidFuel</texPath>
			<color>(111, 199, 214, 170)</color>
		</graphicData>

		<filth>
			<rainWashes>true</rainWashes>
			<cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<maxThickness>1</maxThickness>
		</filth>
	</ThingDef>

	<ThingDef ParentName="BaseFilth">
		<defName>Filth_RubbleMediStone</defName>
		<label>medistone rubble</label>
		<graphicData>
			<texPath>Things/Filth/RubbleRock</texPath>
			<color>(111, 199, 214, 255)</color>
		</graphicData>
		<filth>
			<cleaningWorkToReduceThickness>35</cleaningWorkToReduceThickness>
		</filth>
	</ThingDef>
</Defs>