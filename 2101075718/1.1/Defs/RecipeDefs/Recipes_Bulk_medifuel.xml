<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>Make_10xMedifuel</defName>
		<label>make medifuel x10</label>
		<description>Mix up medifuel ingredients to produce 10 units at a time.\n\nThe 10x bulk production compared to the 1x base recipe, grants :\n+10% productivity gain\n-10% ingredient cost.</description>

		<jobString>Refining medifuel x10</jobString>

		<workAmount>4500</workAmount>

		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineHerbal</li>
					</thingDefs>
				</filter>
				<count>9</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
				<count>9</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>18</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Meat_Megaspider</li>
					</thingDefs>
				</filter>
				<count>9</count>
			</li>
		</ingredients>

		<products>
			<LTF_MediFuel>10</LTF_MediFuel>
		</products>

		<fixedIngredientFilter>
			<thingDefs>
				<li>MedicineHerbal</li>
				<li>Neutroamine</li>
				<li>Chemfuel</li>
				<li>Meat_Megaspider</li>
			</thingDefs>
		</fixedIngredientFilter>

		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<workSkill>Intellectual</workSkill>
		<soundWorking>Recipe_Brewing</soundWorking>
		<skillRequirements>
			<Crafting>5</Crafting>
			<Intellectual>3</Intellectual>
		</skillRequirements>

		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>

		<researchPrerequisite>LTF_Research_Medifuel</researchPrerequisite>
	</RecipeDef>

