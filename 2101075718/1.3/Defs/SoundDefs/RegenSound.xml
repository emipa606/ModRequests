<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<SoundDef>
		<defName>LTF_Medbay_RegenInit</defName>  
		<context>MapOnly</context>  
		<maxSimultaneous>1</maxSimultaneous>  
		<subSounds>
			<li>
				<onCamera>True</onCamera>      
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>Special/RegenInit</clipPath>
					</li>
				</grains>      
				<volumeRange>15~25</volumeRange>
				<distRange>10~34</distRange>
			</li>
		</subSounds>
	</SoundDef>


	<SoundDef>
		<defName>LTF_Medbay_RegenLoop</defName>  
		<sustain>True</sustain>  
		<context>MapOnly</context>
		<priorityMode>PrioritizeNearest</priorityMode>  
		<sustainFadeoutTime>1</sustainFadeoutTime>  

		<maxSimultaneous>1</maxSimultaneous>  
		<subSounds>
			<li>
				<onCamera>True</onCamera>      
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>Special/RegenLoop</clipPath>
					</li>
				</grains>      
				<pitchRange>0.9088235~1</pitchRange>      
				<distRange>10~34</distRange>   
				<volumeRange>15~25</volumeRange>
				
				<sustainLoop>True</sustainLoop>
			</li>
		</subSounds>
	</SoundDef>
</Defs>