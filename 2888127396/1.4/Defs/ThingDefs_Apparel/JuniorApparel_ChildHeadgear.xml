	  <shaderType>CutoutComplex</shaderType>
      <drawSize>0.7</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
	<costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>50</Plasteel>
	  <Gold>12</Gold>
	  <Chemfuel>20</Chemfuel>
	  <VPE_Eltex MayRequire="VanillaExpanded.VPsycastsE">2</VPE_Eltex>
    </costList>
    <statBases>
      <WorkToMake>28000</WorkToMake>
      <MaxHitPoints>350</MaxHitPoints>
      <Mass>1</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Heat>0.4</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>6</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <PsychicSensitivity>0.05</PsychicSensitivity>
      <PsychicEntropyRecoveryRate>0.033</PsychicEntropyRecoveryRate>
	  <ToxicEnvironmentResistance>0.9</ToxicEnvironmentResistance>
	  <MeleeDodgeChance>30</MeleeDodgeChance>
	  <GlobalLearningFactor>0.5</GlobalLearningFactor>
    </equippedStatOffsets>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
	  <useIngredientsForColor>false</useIngredientsForColor>
    </recipeMaker>
    <apparel>
	  <useWornGraphicMask>true</useWornGraphicMask>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
	  <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Apparel/JuniorPA_Headgear_LightPrestige/GrasshopperHelmPrestige</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>PrestigeCombatGear</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <developmentalStageFilter>Child</developmentalStageFilter>
	  <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
	<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255,255,255,255)</only>
				</li>
			</options>
	</colorGenerator>
    <tradeTags>
      <li>HiTechArmor</li>
	  <li>Armor</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>  

