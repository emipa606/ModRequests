<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>Dryxsteel</defName>
    <label>Synthesize Dryxsteel</label>
    <description>Compress Plasteel into Dryxsteel</description>
    <jobString>Forming Dryxsteel</jobString>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>100</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Dryxsteel>1</Dryxsteel>
    </products>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>
  <RecipeDef>
    <defName>DryxsteelBulk</defName>
    <label>Bulk Synthesize Dryxsteel</label>
    <description>Compress Plasteel into Dryxsteel in mass amounts</description>
    <jobString>Bulk Forming Dryxsteel</jobString>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>100</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>225</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Dryxsteel>10</Dryxsteel>
    </products>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>
</Defs>