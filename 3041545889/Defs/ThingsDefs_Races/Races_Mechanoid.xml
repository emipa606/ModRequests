<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Sangvis dinergate-->
  <ThingDef ParentName="LightMechanoid">
    <defName>SF_Dinergate</defName>
    <label>Dinergate</label>
    <description>Low-grade Sangvis Ferri combat unit. It has poor combat ability but it can be easily mass produced. Typically used in defense and search operations. They attack by physically ramming their targets with great force, and their combat power in large numbers should not be underestimated.</description>
    <statBases>
      <MoveSpeed>4.0</MoveSpeed>
	  <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">1</BandwidthCost>
      <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.30</ArmorRating_Sharp>
	  <MeleeDodgeChance>0.2</MeleeDodgeChance>
    </statBases>
	<tools>
      <li>
        <label>front left leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>front right leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
	<body>SF_Dinergate</body>
	<baseBodySize>0.30</baseBodySize>
			<baseHealthScale>0.8</baseHealthScale>
			<mechWeightClass>Light</mechWeightClass>
			<mechEnabledWorkTypes>
				<li>Hauling</li>
			</mechEnabledWorkTypes>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Militor_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Militor_Death</soundDeath>
          <soundCall>Pawn_Mech_Militor_Call</soundCall>
        </li>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Militor_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Militor_Death</soundDeath>
          <soundCall>Pawn_Mech_Militor_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
    <butcherProducts>
      <Steel>100</Steel>
      <Plasteel>5</Plasteel>
	  <SubcoreBasic>1</SubcoreBasic>
    </butcherProducts>
  </ThingDef>
  
  
  <PawnKindDef ParentName="LightMechanoidKind">
    <defName>SF_Dinergate</defName>
    <label>Dinergate</label>
    <race>SF_Dinergate</race>
	<allowInMechClusters>false</allowInMechClusters>
    <combatPower>15</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Dinergate</texPath>
          <maskPath>Things/Pawn/AllegianceOverlays/Dinergate</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>0.80</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/DinergateAncient</texPath>
          <maskPath>Things/Pawn/AllegianceOverlays/Dinergate</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>0.80</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>SF_Dinergate_Gun</li>
    </weaponTags>
  </PawnKindDef>
  
  
    <!-- Sangvis Tarantula-->
  <ThingDef ParentName="LightMechanoid">
    <defName>SF_Tarantula</defName>
    <label>Tarantula</label>
    <description>Tarantula are an armored variant of Dinergate, a small armored mechanical automaton of Sangvis Ferri origin, with a visual appearance similar to a small quadruped animal. Tarantula units can be identified by their large frontal ocular sensor. Compared to Dinergates, they are slower but have good defenses.</description>
    <statBases>
      <MoveSpeed>2.9</MoveSpeed>
	  <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">1</BandwidthCost>
      <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.40</ArmorRating_Sharp>
	  <IncomingDamageFactor>0.85</IncomingDamageFactor>
	  
    </statBases>
	<comps>
      <li Class="CompProperties_ProjectileInterceptor">
        <radius>0.35</radius>
        <interceptGroundProjectiles>true</interceptGroundProjectiles>
        <color>(1, 0.0, 0.0)</color>
        <reactivateEffect>BulletShieldGenerator_Reactivate</reactivateEffect>
        <activeSound>BulletShield_Ambience</activeSound>
        <hitPoints>15</hitPoints>
        <hitPointsRestoreInstantlyAfterCharge>true</hitPointsRestoreInstantlyAfterCharge>
        <chargeDurationTicks>1200</chargeDurationTicks><!-- 20s -->
        <drawWithNoSelection>True</drawWithNoSelection>
        <disarmedByEmpForTicks>7200</disarmedByEmpForTicks>
        <gizmoTipKey>ProjectileInterceptorTip</gizmoTipKey>
      </li>
    </comps>
	<tools>
      <li>
        <label>front left leg</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>5.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>front right leg</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>5.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Burn</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
	<body>SF_Tarantula</body>
	<baseBodySize>0.32</baseBodySize>
			<baseHealthScale>1.7</baseHealthScale>
			<mechWeightClass>Light</mechWeightClass>
			<mechEnabledWorkTypes>
				<li>Construction</li>
			</mechEnabledWorkTypes>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Militor_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Militor_Death</soundDeath>
          <soundCall>Pawn_Mech_Militor_Call</soundCall>
        </li>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Militor_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Militor_Death</soundDeath>
          <soundCall>Pawn_Mech_Militor_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
    <butcherProducts>
      <Steel>200</Steel>
      <Plasteel>55</Plasteel>
	  <SubcoreBasic>1</SubcoreBasic>
    </butcherProducts>
  </ThingDef>
  
  
