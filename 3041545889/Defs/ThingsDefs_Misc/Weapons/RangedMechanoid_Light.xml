<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="LightMechanoidGunRanged">
    <defName>SF_Dinergate_Gun</defName>
    <label>Dinergate laser</label>
    <description>An extremely small and innacurate gun, relies on spray and pray techniques along with being used in large groups.</description>
    <graphicData>
      <texPath>Things/Weapons/SF_smolshot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>700</MarketValue>
      <Mass>1.0</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.50</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>      
    </statBases>
    <weaponTags>
      <li>SF_Dinergate_Gun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
		<defaultProjectile>SF_Default_Shot</defaultProjectile>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>0</warmupTime>
        <range>17</range>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

<ThingDef ParentName="BaseBullet">
    <defName>SF_Default_Shot</defName>
    <label>Dinergate Laser</label>
    <graphicData>
      <texPath>Things/Projectile/SF_shot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(255,15,15)</color>
    </graphicData>
    <projectile>
			<damageDef>Burn</damageDef>
			<damageAmountBase>7</damageAmountBase>
			<stoppingPower>0.7</stoppingPower>
			<speed>75</speed>
    </projectile>
  </ThingDef>



 <ThingDef ParentName="LightMechanoidGunRanged">
    <defName>SF_Tarantula_Gun</defName>
    <label>Tarantula orb laser</label>
    <description>A small short range projectile, Tarantulas have this equiped on their head, the laser emits from two prongs projecting energy into eachother launching a magnetic beam forward, this weapon can also hold the charge to burn as a melee attack instead.</description>
    <graphicData>
      <texPath>Things/Weapons/SF_smolshot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>700</MarketValue>
      <Mass>1.0</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>      
    </statBases>
    <weaponTags>
      <li>SF_Tarantula_Gun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
		<defaultProjectile>SF_Tarantula_Default_Shot</defaultProjectile>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>1.0</warmupTime>
        <range>10</range>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

<ThingDef ParentName="BaseBullet">
    <defName>SF_Tarantula_Default_Shot</defName>
    <label>Tarantula Laser</label>
    <graphicData>
      <texPath>Things/Projectile/SF_Tarantula_shot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(0,255,255)</color>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <speed>60</speed>
      <damageAmountBase>8</damageAmountBase>
	  <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>


</Defs>