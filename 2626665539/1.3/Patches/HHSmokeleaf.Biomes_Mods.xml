<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Medieval Overhaul</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Medieval Overhaul Biomes -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName = "DankPyon_DarkForest"]/wildPlants</xpath>
                    <value>
                        <Plant_Smokeleaf>0.08</Plant_Smokeleaf>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName = "DankPyon_AncientForest"]/wildPlants</xpath>
                    <value>
                        <Plant_Smokeleaf>0.06</Plant_Smokeleaf>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>