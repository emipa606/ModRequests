<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Chemfuel Recipe -->
	<RecipeDef>
		<defName>Make_ChemfuelFromSmokeleaf</defName>
		<label>make chemfuel from smokeleaf</label>
		<description>Make a batch of chemfuel by extracting and condensing oils from smokeleaf.</description>
		<jobString>Refining chemfuel from wood.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>2250</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SmokeleafLeaves</li>
					</thingDefs>
				</filter>
				<count>64</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SmokeleafLeaves</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Chemfuel>35</Chemfuel>
		</products>
		<researchPrerequisite>SmokeleafRefining</researchPrerequisite>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
	</RecipeDef>
	<!-- Herbal Medicine Recipe -->
	<RecipeDef>
		<defName>Make_HerbalMedicine_HH</defName>
		<label>make herbal medicine</label>
		<description>Making herbal medicine from smokeleaf leaves.</description>
		<jobString>Making herbal medicine.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Research</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<workAmount>1400</workAmount>
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>CraftingSpot</li>
			<li>DrugLab</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SmokeleafLeaves</li>
					</thingDefs>
				</filter>
				<count>16</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Textiles</li>
					</categories>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SmokeleafLeaves</li>
				<li>HempCloth</li>
				<li>Cloth</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>4</Crafting>
			<Intellectual>4</Intellectual>
		</skillRequirements>
		<researchPrerequisite>SmokeleafMedicine</researchPrerequisite>
		<products>
			<MedicineHerbal>2</MedicineHerbal>
		</products>
		<workSkill>Intellectual</workSkill>
	</RecipeDef>
