<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<TerrainDef Name="ClutterFloorBase" Abstract="True">
		<layerable>true</layerable>
		<affordances>
			<li>Light</li>
			<li>Medium</li>
			<li>Heavy</li>
		</affordances>
		<statBases>
			<WorkToBuild>1000</WorkToBuild>
		</statBases>
		<designationCategory>Floors</designationCategory>
		<fertility>0</fertility>
		<constructEffect>ConstructDirt</constructEffect>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
	</TerrainDef>

	<TerrainDef ParentName="ClutterFloorBase">
		<defName>ClutterWoodTileA</defName>
		<label>Wood Panels</label>
		<renderPrecedence>245</renderPrecedence>
		<description>Miracles of modern science, wood panels made of wood</description>
		<texturePath>Clutter/Floor/FloorA</texturePath>
		<uiIconPath>Clutter/Floor/FloorAI</uiIconPath>
		<statBases>
			<Beauty>1</Beauty>
		</statBases>
		<costList>
			<WoodLog>5</WoodLog>
		</costList>
		<constructEffect>ConstructWood</constructEffect>
		<researchPrerequisites>
			<li>UtilityStructures</li>
		</researchPrerequisites>
	</TerrainDef>

	<TerrainDef ParentName="ClutterFloorBase">
		<defName>ClutterConcreteTileA</defName>
		<label>Dark Concrete</label>
		<renderPrecedence>243</renderPrecedence>
		<description>Concrete with pattern, and it's all made from plasteel.\nYes, that is advanced science!</description>
		<texturePath>Clutter/Floor/FloorC</texturePath>
		<uiIconPath>Clutter/Floor/FloorCI</uiIconPath>
		<statBases>
			<Beauty>0</Beauty>
		</statBases>
		<costList>
			<Plasteel>1</Plasteel>
		</costList>
		<researchPrerequisites>
			<li>WallReinforcment</li>
		</researchPrerequisites>
	</TerrainDef>

	<TerrainDef ParentName="ClutterFloorBase">
		<defName>ClutterMetalTileB</defName>
		<label>Metal panels</label>
		<renderPrecedence>242</renderPrecedence>
		<description>These panels will last ages, unless they rust.</description>
		<texturePath>Clutter/Floor/FloorE</texturePath>
		<uiIconPath>Clutter/Floor/FloorEI</uiIconPath>
		<costList>
			<Steel>4</Steel>
		</costList>
		<researchPrerequisites>
			<li>UtilityStructures</li>
		</researchPrerequisites>
	</TerrainDef>

	<TerrainDef ParentName="ClutterFloorBase">
		<defName>ClutterCeramicTileA</defName>
		<label>Ceramic Panels</label>
		<renderPrecedence>241</renderPrecedence>
		<description>A perfect fit for a morgue</description>
		<texturePath>Clutter/Floor/FloorF</texturePath>
		<uiIconPath>Clutter/Floor/FloorFI</uiIconPath>
		<statBases>
			<Beauty>2</Beauty>
		</statBases>
		<costList>
			<Plasteel>1</Plasteel>
		</costList>
		<researchPrerequisites>
			<li>WallReinforcment</li>
		</researchPrerequisites>
	</TerrainDef>

</Defs>