<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Gloomy Vanilla Overhaul</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="ElectricStove"]/graphicData</xpath>
					<value>
						<graphicData>
							<texPath>Things/Building/Kitchen/Electric_Countertop</texPath>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>(4,4)</drawSize>
							<shaderType>CutoutComplex</shaderType>
							<damageData>
								<cornerTL>Damage/Corner</cornerTL>
								<cornerTR>Damage/Corner</cornerTR>
								<cornerBL>Damage/Corner</cornerBL>
								<cornerBR>Damage/Corner</cornerBR>
							</damageData>
						</graphicData>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="ElectricStove"]/size</xpath>
					<value>
						<size>(2,1)</size>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="ElectricStove"]/costList</xpath>
					<value>
						<costList>
							<Steel>40</Steel>
						</costList>
					</value>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="ElectricStove"]/stuffCategories</xpath>
					<nomatch Class="PatchOperationSequence">
						<success>Normal</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/ThingDef[defName="ElectricStove"]</xpath>
								<value>
									<costStuffCount>40</costStuffCount>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/ThingDef[defName="ElectricStove"]</xpath>
								<value>
									<stuffCategories>
										<li>Metallic</li>
										<li>Woody</li>
									</stuffCategories>
								</value>
							</li>
							<li Class="PatchOperationRemove">
								<xpath>/Defs/ThingDef[defName="ElectricStove"]/constructEffect</xpath>
							</li>
						</operations>
					</nomatch>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="ElectricStove"]/comps/li[@Class="CompProperties_AffectedByFacilities"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="ElectricStove"]/comps</xpath>
						<value>
							<li Class="CompProperties_AffectedByFacilities">
								<linkableFacilities>
									<li>SM_Sink</li>
									<li>SM_KitchenCupboard_A</li>
									<li>SM_KitchenCupboard_B</li>
									<li>SM_KitchenCupboard_C</li>
								</linkableFacilities>
							</li>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="ElectricStove"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
						<value>
							<li>SM_Sink</li>
							<li>SM_KitchenCupboard_A</li>
							<li>SM_KitchenCupboard_B</li>
							<li>SM_KitchenCupboard_C</li>
						</value>
					</match>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="FueledStove"]/comps/li[@Class="CompProperties_AffectedByFacilities"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="FueledStove"]/comps</xpath>
						<value>
							<li Class="CompProperties_AffectedByFacilities">
								<linkableFacilities>
									<li>SM_Sink</li>
									<li>SM_KitchenCupboard_A</li>
									<li>SM_KitchenCupboard_B</li>
									<li>SM_KitchenCupboard_C</li>
								</linkableFacilities>
							</li>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="FueledStove"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
						<value>
							<li>SM_Sink</li>
							<li>SM_KitchenCupboard_A</li>
							<li>SM_KitchenCupboard_B</li>
							<li>SM_KitchenCupboard_C</li>
						</value>
					</match>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name="SMFurnitureBase"]/designationCategory</xpath>
					<value>
						<designationCategory>Furniture</designationCategory>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
