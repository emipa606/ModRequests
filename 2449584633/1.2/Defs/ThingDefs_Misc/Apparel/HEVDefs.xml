<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
 <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_HEVMarkIV</defName>
    <label>H.E.V Mark IV</label>
    <description>The Hazardous EnVironment suit, is a full-body hazardous materials suit developed at the Black Mesa Research Facility./n Designed for Black Mesa scientists to protect themselves from radiation, energy discharges, blunt-force trauma during the handling of hazardous materials.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/HEV/Mark4</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1</drawSize>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>12</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.54</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>40</Insulation_Heat>
      <EquipDelay>14</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <ToxicSensitivity>-0.8</ToxicSensitivity>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <Plasteel>100</Plasteel>
      <Uranium>20</Uranium>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/HEV/Mk4/Mk4</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
    <comps>
      <li Class="CompProperties_BiocodableApparel"/>
	  <li Class="HLVR.CompProperties_ApparelEquipSoundIV" />
    </comps>
  </ThingDef>
  
