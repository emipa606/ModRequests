<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_UltimateGear</defName>
    <label>Ultimate Sunglasses</label>
    <description>Nobody expected 8-bit sunglasses huh? Quality over quantity.</description>
    <techLevel>Medieval</techLevel>


    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>1</Crafting>
      </skillRequirements>
    </recipeMaker>

    
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/UltimateGear/UltimateGear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <statBases>
	<Beauty>9999</Beauty>
      <WorkToMake>420</WorkToMake>
	        <Flammability>0</Flammability>
      <MaxHitPoints>99999</MaxHitPoints>
      <Mass>0.001</Mass>
      <StuffEffectMultiplierArmor>999999</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>99999</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>999</StuffEffectMultiplierInsulation_Heat>
	  <ArmorRating_Blunt>999</ArmorRating_Blunt>
      <ArmorRating_Sharp>999</ArmorRating_Sharp>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	    <equippedStatOffsets>
      <PsychicSensitivity>-1</PsychicSensitivity>
	  <WorkSpeedGlobal>999</WorkSpeedGlobal>
	  <ResearchSpeed>999</ResearchSpeed>
	  <ConstructSuccessChance>1</ConstructSuccessChance>
	  <ShootingAccuracyPawn>1</ShootingAccuracyPawn>
	  <AimingDelayFactor>-1</AimingDelayFactor>
	  <IncomingDamageFactor>-1</IncomingDamageFactor>
	  <ToxicSensitivity>-1</ToxicSensitivity>
	  <PawnBeauty>999</PawnBeauty>
	  <SocialImpact>999</SocialImpact>
	  <TameAnimalChance>999</TameAnimalChance>
	  <TrainAnimalChance>999</TrainAnimalChance>
	  <ImmunityGainSpeedFactor>999</ImmunityGainSpeedFactor>
	  <SurgerySuccessChanceFactor>999</SurgerySuccessChanceFactor>
	  <TradePriceImprovement>9999</TradePriceImprovement>
    </equippedStatOffsets>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>420</costStuffCount>
    <costList>
      <Plasteel>10</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
		<li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
		<li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/UltimateGear/UltimateGear</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>SpacerMilitaryAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
     <options>
        <li>
          <only>(0,0,0)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
