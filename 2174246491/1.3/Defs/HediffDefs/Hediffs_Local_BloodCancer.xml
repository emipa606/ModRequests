<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>BloodCancer</defName>
		<label>blood cancer</label>
		<description>Blood cancers affect blood cells and bone marrow. These cancers change the way blood cells behave and how well they work.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>0.3</initialSeverity>
		<lethalSeverity>1.0</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>240</baseTendDurationHours>
				<severityPerDayTended>-0.03</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.025</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.6</min>
					<max>1.4</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.125</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.25</minSeverity>
				<label>moderate</label>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.375</minSeverity>
				<label>major</label>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>serious</label>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.625</minSeverity>
				<label>severe</label>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>extreme</label>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.35</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.875</minSeverity>
				<label>fatal</label>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.45</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.45</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>