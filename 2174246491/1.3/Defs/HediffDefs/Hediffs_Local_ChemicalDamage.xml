<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>ChemicalDamageModerate</defName>
		<label>chemical damage</label>
		<description>Chemical damage at the cellular level.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.002</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.7</min>
					<max>1.3</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<partEfficiencyOffset>-0.35</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<partEfficiencyOffset>-0.65</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.9</minSeverity>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>ChemicalDamageSevere</defName>
		<label>chemical damage</label>
		<description>Chemical damage at the cellular level.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.003</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.5</min>
					<max>1.5</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<partEfficiencyOffset>-0.4</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<partEfficiencyOffset>-0.6</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.9</minSeverity>
				<partEfficiencyOffset>-1.0</partEfficiencyOffset>
				<destroyPart>true</destroyPart>
			</li>
		</stages>
	</HediffDef>

</Defs>