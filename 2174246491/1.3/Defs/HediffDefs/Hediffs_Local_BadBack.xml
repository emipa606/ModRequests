<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>BadBack</defName>
		<label>bad back</label>
    	<labelNoun>a bad back</labelNoun>
		<description>Degradation in the spinal column and surrounding musculature. This makes it hard to move and bend smoothly.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>0.001</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.0065</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.45</min>
					<max>1.35</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<partEfficiencyOffset>-0.05</partEfficiencyOffset>
			</li>
			<li>
				<label>sparse</label>
				<minSeverity>0.1</minSeverity>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.3</minSeverity>
				<partEfficiencyOffset>-0.2</partEfficiencyOffset>
			</li>
			<li>
				<label>distinct</label>
				<minSeverity>0.4</minSeverity>
				<partEfficiencyOffset>-0.25</partEfficiencyOffset>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.5</minSeverity>
				<partEfficiencyOffset>-0.35</partEfficiencyOffset>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.6</minSeverity>
				<partEfficiencyOffset>-0.45</partEfficiencyOffset>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.7</minSeverity>
				<partEfficiencyOffset>-0.55</partEfficiencyOffset>
			</li>
			<li>
				<label>grave</label>
				<minSeverity>0.8</minSeverity>
				<partEfficiencyOffset>-0.65</partEfficiencyOffset>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.9</minSeverity>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
			</li>
			<li>
				<label>final</label>
				<minSeverity>1.0</minSeverity>
				<partEfficiencyOffset>-0.9</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

</Defs>