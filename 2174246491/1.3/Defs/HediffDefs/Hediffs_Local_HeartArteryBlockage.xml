<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>HeartArteryBlockage</defName>
		<label>artery blockage</label>
		<labelNoun>an artery blockage</labelNoun>
		<description>A blockage in one of the critical arteries in the heart. Heart artery blockages randomly induce heart attacks.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<lethalSeverity>1</lethalSeverity>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.0007</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.5</min>
					<max>3</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
        		<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.025</minSeverity>
				<label>initial</label>
				<partEfficiencyOffset>-0.05</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>600</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>480</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<label>moderate</label>
				<partEfficiencyOffset>-0.2</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>360</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>major</label>
				<partEfficiencyOffset>-0.3</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>240</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>severe</label>
				<partEfficiencyOffset>-0.45</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>180</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>extreme</label>
				<partEfficiencyOffset>-0.6</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>120</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.9</minSeverity>
				<label>fatal</label>
				<lifeThreatening>true</lifeThreatening>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>