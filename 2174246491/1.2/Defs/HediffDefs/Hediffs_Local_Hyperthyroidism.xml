<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Hyperthyroidism</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>hyperthyroidism</label>
		<description>Hyperthyroidism is the condition that occurs due to excessive production of thyroid hormones by the thyroid gland.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<stages>
			<li>
				<hungerRateFactorOffset>1.1</hungerRateFactorOffset>
				<socialFightChanceFactor>1.1</socialFightChanceFactor>
				<restFallFactor>0.8</restFallFactor>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<ComfyTemperatureMax>-5</ComfyTemperatureMax>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

</Defs>