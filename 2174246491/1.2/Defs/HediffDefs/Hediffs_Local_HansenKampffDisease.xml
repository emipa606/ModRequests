<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>HansenKampffDisease</defName>
		<label>Hansen-Kampff disease</label>
		<description>Leprosy, also known as Hansen's disease (HD), is a long-term infection by the bacteria Mycobacterium leprae or Mycobacterium lepromatosis.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.0016</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.5</min>
					<max>2.0</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
			</li>
			<li>
				<minSeverity>0.075</minSeverity>
				<label>sparse</label>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>150</mtbDays>
						<partsToAffect>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
							<li>Finger</li>
							<li>Toe</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>120</mtbDays>
						<partsToAffect>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
							<li>Finger</li>
							<li>Toe</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.325</minSeverity>
				<label>moderate</label>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>90</mtbDays>
						<partsToAffect>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
							<li>Finger</li>
							<li>Toe</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>major</label>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
