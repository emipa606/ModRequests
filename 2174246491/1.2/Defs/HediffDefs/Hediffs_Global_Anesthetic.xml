<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Anesthetic</defName>
		<label>anesthetic</label>
		<description>Sleep drugs in the bloodstream. Anesthetic renders creatures unconscious.</description>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>30000</min> <!-- 0.5 days -->
					<max>45000</max> <!-- 0.75 days -->
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>ComaTimed</hediff>
						<mtbDays>180</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>240</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>300</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>