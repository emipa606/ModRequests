<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InfectionBase">
		<defName>Tuberculosis</defName>
		<label>tuberculosis</label>
		<description>tuberculosis</description>
		<makesSickThought>true</makesSickThought>
		<lethalSeverity>1</lethalSeverity>
		<scenarioCanAdd>true</scenarioCanAdd>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>120</baseTendDurationHours>
				<severityPerDayTended>-0.20</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
				<immunityPerDaySick>0.12</immunityPerDaySick>
				<severityPerDayNotImmune>0.137</severityPerDayNotImmune>
				<severityPerDayImmune>-0.27</severityPerDayImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.8</min>
					<max>1.2</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
			</li>
			<li>
				<minSeverity>0.575</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Lung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.65</minSeverity>
				<label>moderate</label>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Lung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.725</minSeverity>
				<label>major</label>
				<hungerRateFactorOffset>0.9</hungerRateFactorOffset>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Lung</li>
							<li>Spine</li>
							<li>Pelvis</li>
							<li>Femur</li>
							<li>Humerus</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Lung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.8</minSeverity>
				<label>severe</label>
				<hungerRateFactorOffset>0.8</hungerRateFactorOffset>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>5</mtbDays>
						<partsToAffect>
							<li>Liver</li>
							<li>Kidney</li>
							<li>Lung</li>
							<li>Eye</li>
							<li>Spine</li>
							<li>Pelvis</li>
							<li>Sternum</li>
							<li>Femur</li>
							<li>Humerus</li>
							<li>Clavicle</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Lung</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Lung</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>BadBack</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Spine</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.875</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<hungerRateFactorOffset>0.7</hungerRateFactorOffset>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>2.5</mtbDays>
						<partsToAffect>
							<li>Liver</li>
							<li>Kidney</li>
							<li>Lung</li>
							<li>Eye</li>
							<li>Brain</li>
							<li>Spine</li>
							<li>Pelvis</li>
							<li>Sternum</li>
							<li>Femur</li>
							<li>Humerus</li>
							<li>Clavicle</li>
							<li>Tibia</li>
							<li>Radius</li>
						</partsToAffect>
						<countToAffect>4</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Lung</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>BadBack</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Spine</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>EncapsulatedTuberculosis</defName>
		<label>encapsulated pathogen</label>
		<description>Carries the pathogen, which can cause the disease to break out at any time.</description>
		<stages>
			<li>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Tuberculosis</hediff>
						<mtbDays>240</mtbDays>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>