<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Parkinsons</defName>
		<label>parkinson's</label>
		<description>Parkinson's disease (PD), or simply Parkinson's, is a long-term degenerative disorder of the central nervous system that mainly affects the motor system.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.0016</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.5</min>
					<max>1.5</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.15</minSeverity>
				<partEfficiencyOffset>-0.01</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.3</minSeverity>
				<partEfficiencyOffset>-0.03</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Stupor</hediff>
						<mtbDays>90</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.45</minSeverity>
				<partEfficiencyOffset>-0.06</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.35</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Stupor</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.6</minSeverity>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Stupor</hediff>
						<mtbDays>45</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>1200</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.75</minSeverity>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.45</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.7</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Stupor</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>600</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.9</minSeverity>
				<partEfficiencyOffset>-0.2</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.6</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.9</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Stupor</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>300</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>