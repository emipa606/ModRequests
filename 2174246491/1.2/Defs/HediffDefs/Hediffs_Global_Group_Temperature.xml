<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>Heatstroke</defName>
		<defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
		<label>heatstroke</label>
		<description>A generalized disruption to body functioning caused by excessive exposure to heat and sun. The victim becomes dizzy, weak, and confused. Recovery is quick once in a cool area, but if heat exposure continues, heat stroke gets worse until death.</description>
		<lethalSeverity>1</lethalSeverity>
    	<taleOnVisible>HeatstrokeRevealed</taleOnVisible>
		<stages>
			<li>
				<label>sweating</label>
        		<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>sweating</label>
				<minSeverity>0.05</minSeverity>
			</li>
			<li>
				<label>initial</label>
				<minSeverity>0.15</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.30</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.50</minSeverity>
				<painOffset>0.15</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.70</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.30</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.10</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>60.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaTimed</hediff>
						<mtbDays>30.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>fatal</label>
				<minSeverity>0.90</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.45</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>30.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaTimed</hediff>
						<mtbDays>15.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>5.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>Hypothermia</defName>
		<defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
		<label>hypothermia</label>
		<description>Dangerously low core body temperature. Unless re-warmed, hypothermia gets worse and ends in death. Recovery is quick once the victim is re-warmed. Avoid hypothermia by wearing warm clothes in cold environments.</description>
