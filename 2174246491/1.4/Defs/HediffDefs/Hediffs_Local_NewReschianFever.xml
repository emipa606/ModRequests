<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InfectionBase">
		<defName>NewReschianFever</defName>
		<label>New Reschian fever</label>
		<description>Will decrease your pawns max. comfortable temperature and increase their psychic sensitivity as it increases in severity. Can cause eyesight loss, necrosis, migraine or (at its last stage) alzheimer's.</description>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>36</baseTendDurationHours>
				<severityPerDayTended>-0.34</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
				<immunityPerDaySick>0.32</immunityPerDaySick>
				<severityPerDayNotImmune>0.48</severityPerDayNotImmune>
				<severityPerDayImmune>-0.2</severityPerDayImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.8</min>
					<max>1.2</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<statOffsets>
					<PsychicSensitivity>0.05</PsychicSensitivity>
					<ComfyTemperatureMax>-2</ComfyTemperatureMax>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.425</minSeverity>
				<label>minor</label>
				<statOffsets>
					<PsychicSensitivity>0.1</PsychicSensitivity>
					<ComfyTemperatureMax>-3</ComfyTemperatureMax>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Cataract</hediff>
						<mtbDays>45</mtbDays>
						<partsToAffect>
							<li>Eye</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.55</minSeverity>
				<label>moderate</label>
				<statOffsets>
					<PsychicSensitivity>0.15</PsychicSensitivity>
					<ComfyTemperatureMax>-4</ComfyTemperatureMax>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Cataract</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Eye</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Migraine</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.675</minSeverity>
				<label>major</label>
				<statOffsets>
					<PsychicSensitivity>0.25</PsychicSensitivity>
					<ComfyTemperatureMax>-5</ComfyTemperatureMax>
				</statOffsets>
				<hungerRateFactorOffset>0.9</hungerRateFactorOffset>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Cataract</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Eye</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Eye</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Migraine</hediff>
						<mtbDays>25</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.8</minSeverity>
				<label>severe</label>
				<statOffsets>
					<PsychicSensitivity>0.35</PsychicSensitivity>
					<ComfyTemperatureMax>-6</ComfyTemperatureMax>
				</statOffsets>
				<hungerRateFactorOffset>0.8</hungerRateFactorOffset>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Cataract</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Eye</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>20</mtbDays>
						<partsToAffect>
							<li>Eye</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Migraine</hediff>
						<mtbDays>20</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.925</minSeverity>
				<label>extreme</label>
				<statOffsets>
					<PsychicSensitivity>0.5</PsychicSensitivity>
					<ComfyTemperatureMax>-7</ComfyTemperatureMax>
				</statOffsets>
				<hungerRateFactorOffset>0.7</hungerRateFactorOffset>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.2</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Cataract</hediff>
						<mtbDays>7.5</mtbDays>
						<partsToAffect>
							<li>Eye</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Eye</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Migraine</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Alzheimers</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>