<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Osteoporosis</defName>
		<label>osteoporosis</label>
		<description>Osteoporosis is a disease in which bone weakening increases the risk of a broken bone.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>0.001</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.003</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.25</min>
					<max>1.75</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
        		<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.03</minSeverity>
				<label>initial</label>
			</li>
			<li>
				<minSeverity>0.075</minSeverity>
				<partEfficiencyOffset>-0.09</partEfficiencyOffset>
				<label>sparse</label>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<partEfficiencyOffset>-0.22</partEfficiencyOffset>
				<label>minor</label>
			</li>
			<li>
				<minSeverity>0.325</minSeverity>
				<partEfficiencyOffset>-0.35</partEfficiencyOffset>
				<label>moderate</label>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<partEfficiencyOffset>-0.48</partEfficiencyOffset>
				<label>major</label>
			</li>
			<li>
				<minSeverity>0.575</minSeverity>
				<partEfficiencyOffset>-0.61</partEfficiencyOffset>
				<label>serious</label>
			</li>
			<li>
				<minSeverity>0.7</minSeverity>
				<partEfficiencyOffset>-0.74</partEfficiencyOffset>
				<label>severe</label>
			</li>
			<li>
				<minSeverity>0.825</minSeverity>
				<partEfficiencyOffset>-0.87</partEfficiencyOffset>
				<label>extreme</label>
			</li>
			<li>
				<minSeverity>0.95</minSeverity>
				<partEfficiencyOffset>-1.0</partEfficiencyOffset>
				<label>final</label>
			</li>
		</stages>
	</HediffDef>

</Defs>