<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InfectionBase">
		<defName>KindredDickVirus</defName>
		<label>Kindred-Dick virus</label>
		<description>Can cause dermal irritations (scratches), inflammations and at later stages secondary damage to various body parts.</description>
		<makesSickThought>true</makesSickThought>
		<lethalSeverity>1</lethalSeverity>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>36</baseTendDurationHours>
				<severityPerDayTended>-0.38</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<immunityPerDayNotSick>-0.025</immunityPerDayNotSick>
				<immunityPerDaySick>0.35</immunityPerDaySick>
				<severityPerDayNotImmune>0.522</severityPerDayNotImmune>
				<severityPerDayImmune>-0.2</severityPerDayImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.85</min>
					<max>1.15</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
			</li>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>minor</label>
				<painOffset>0.05</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.15</minSeverity>
						<baseMtbDays>1</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<label>moderate</label>
				<painOffset>0.10</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.15</minSeverity>
						<baseMtbDays>0.8</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.35</minSeverity>
				<label>major</label>
				<painOffset>0.20</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.3</minSeverity>
						<baseMtbDays>0.6</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>10</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>serious</label>
				<painOffset>0.35</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.45</minSeverity>
						<baseMtbDays>0.4</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>2.5</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.65</minSeverity>
				<label>severe</label>
				<painOffset>0.50</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.6</minSeverity>
						<baseMtbDays>0.2</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>1.5</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Eye</li>
							<li>Ear</li>
							<li>Lung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.8</minSeverity>
				<label>extreme</label>
				<painOffset>0.70</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.75</minSeverity>
						<baseMtbDays>0.1</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>0.75</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>5</mtbDays>
						<partsToAffect>
							<li>Brain</li>
							<li>Eye</li>
							<li>Ear</li>
							<li>Lung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.95</minSeverity>
				<label>fatal</label>
				<painOffset>0.95</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.9</minSeverity>
						<baseMtbDays>0.05</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>0.25</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>1</mtbDays>
						<partsToAffect>
							<li>Brain</li>
							<li>Eye</li>
							<li>Ear</li>
							<li>Lung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>