<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Dementia</defName>
		<label>dementia</label>
		<description>Neural degradation which causes deficits in the ability to think and remember. Dementia has various causes including aging, specific illnesses, and toxins.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.003</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.5</min>
					<max>1.5</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<partEfficiencyOffset>-0.05</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>12</mtbDays>
					</li>
				</mentalStateGivers>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.5</minSeverity>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.20</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>8</mtbDays>
					</li>
				</mentalStateGivers>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>120</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.8</minSeverity>
				<partEfficiencyOffset>-0.30</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.35</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>4</mtbDays>
					</li>
				</mentalStateGivers>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>600</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>