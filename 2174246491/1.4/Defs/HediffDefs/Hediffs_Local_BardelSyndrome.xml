<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>BardelSyndrome</defName>
		<label>Bardel syndrome</label>
		<description>A severe mental long-term condition, that can be treated to be hold at bay. Reaches, if not properly treated, from a stage of almost symptom freedom, via a stage of light confusion, via mania, via frightening, through to furious anger.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>0.3</initialSeverity>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>1.0</maxSeverity>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.15</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.65</min>
					<max>1.35</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>180</baseTendDurationHours>
				<tendAllAtOnce>true</tendAllAtOnce>
				<severityPerDayTended>-0.3</severityPerDayTended>
			</li>
		</comps>
		<stages>
			<li>
				<label>stage 0: almost symptom-free</label>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.2</minSeverity>
						<baseMtbDays>10</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Bite</hediff>
						<minSeverity>0.2</minSeverity>
						<baseMtbDays>20</baseMtbDays>
						<partsToAffect>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>stage 1: confusion</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>10</mtbDays>
					</li>
				</mentalStateGivers>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.3</minSeverity>
						<baseMtbDays>8</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Bite</hediff>
						<minSeverity>0.35</minSeverity>
						<baseMtbDays>17.5</baseMtbDays>
						<partsToAffect>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>stage 2: mania</label>
				<minSeverity>0.4</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<offset>0.5</offset>
					</li>
				</capMods>
				<statOffsets>
					<SocialImpact>-0.1</SocialImpact>
				</statOffsets>
				<socialFightChanceFactor>1.5</socialFightChanceFactor>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.4</minSeverity>
						<baseMtbDays>6</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Bite</hediff>
						<minSeverity>0.5</minSeverity>
						<baseMtbDays>15</baseMtbDays>
						<partsToAffect>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>stage 3: frightened</label>
				<minSeverity>0.6</minSeverity>
				<socialFightChanceFactor>-1.0</socialFightChanceFactor>
				<painOffset>0.25</painOffset>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.8</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>PanicFlee</mentalState>
						<mtbDays>12</mtbDays>
					</li>
					<li>
						<mentalState>Wander_Psychotic</mentalState>
						<mtbDays>12</mtbDays>
					</li>
					<li>
						<mentalState>Wander_OwnRoom</mentalState>
						<mtbDays>12</mtbDays>
					</li>
				</mentalStateGivers>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.5</minSeverity>
						<baseMtbDays>4</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Bite</hediff>
						<minSeverity>0.65</minSeverity>
						<baseMtbDays>12.5</baseMtbDays>
						<partsToAffect>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>stage 4: furious</label>
				<minSeverity>0.8</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.5</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
				<statOffsets>
					<SocialImpact>-0.35</SocialImpact>
				</statOffsets>
				<socialFightChanceFactor>3.0</socialFightChanceFactor>
				<mentalStateGivers>
					<li>
						<mentalState>Berserk</mentalState>
						<mtbDays>5</mtbDays>
					</li>
					<li>
						<mentalState>Manhunter</mentalState>
						<mtbDays>15</mtbDays>
					</li>
				</mentalStateGivers>
				<hediffGivers>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.6</minSeverity>
						<baseMtbDays>2</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Bite</hediff>
						<minSeverity>0.8</minSeverity>
						<baseMtbDays>10</baseMtbDays>
						<partsToAffect>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>