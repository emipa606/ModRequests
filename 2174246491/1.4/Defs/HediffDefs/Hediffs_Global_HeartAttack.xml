<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>HeartAttack</defName>
		<hediffClass>Hediff_HeartAttack</hediffClass>
		<defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
		<label>heart attack</label>
		<description>A disruption in the heart's normal beating rhythm. Heart attacks can be debilitatingly painful. They can worsen and lead to death, or recover.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>0.4</initialSeverity>
		<lethalSeverity>1</lethalSeverity>
		<tendable>true</tendable>
		<stages>
			<li>
				<label>painful</label>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.4</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<postFactor>0.5</postFactor>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>5.0</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>debilitating</label>
				<minSeverity>0.65</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.6</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>2.5</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>PTSD</hediff>
						<mtbDays>15.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>fatal</label>
				<minSeverity>0.9</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>1.0</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaTimed</hediff>
						<mtbDays>5.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>10.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>