<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>HearingLoss</defName>
		<label>hearing loss</label>
		<description>Inability to hear quiet sounds due to degradation of hair cells in the cochlea.</description>
    	<cureAllAtOnceIfCuredByItem>true</cureAllAtOnceIfCuredByItem>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>0.001</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.005</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.65</min>
					<max>1.35</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<partEfficiencyOffset>-0.05</partEfficiencyOffset>
			</li>
			<li>
				<label>sparse</label>
				<minSeverity>0.1</minSeverity>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<partEfficiencyOffset>-0.2</partEfficiencyOffset>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.3</minSeverity>
				<partEfficiencyOffset>-0.3</partEfficiencyOffset>
			</li>
			<li>
				<label>distinct</label>
				<minSeverity>0.4</minSeverity>
				<partEfficiencyOffset>-0.4</partEfficiencyOffset>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.5</minSeverity>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.6</minSeverity>
				<partEfficiencyOffset>-0.6</partEfficiencyOffset>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.7</minSeverity>
				<partEfficiencyOffset>-0.7</partEfficiencyOffset>
			</li>
			<li>
				<label>grave</label>
				<minSeverity>0.8</minSeverity>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.9</minSeverity>
				<partEfficiencyOffset>-0.9</partEfficiencyOffset>
			</li>
			<li>
				<label>final</label>
				<minSeverity>1.0</minSeverity>
				<partEfficiencyOffset>-1.0</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

</Defs>