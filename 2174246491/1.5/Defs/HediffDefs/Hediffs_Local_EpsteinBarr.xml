<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>EpsteinBarrVirus</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>Epstein-Barr virus, type C</label>
		<description>The Epstein–Barr virus (EBV), formally called Human gammaherpesvirus 4, is one of the nine known human herpesvirus types in the herpes family, and is one of the most common viruses in humans.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.00</maxSeverity>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.033</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.5</min>
					<max>1.5</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
        		<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.15</minSeverity>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>BloodCancer</hediff>
						<mtbDays>1800</mtbDays>
						<partsToAffect>
							<li>Femur</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Toothache</hediff>
						<mtbDays>600</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Carcinoma</hediff>
						<mtbDays>600</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>BenignGrowth</hediff>
						<mtbDays>600</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>StomachUlcer</hediff>
						<mtbDays>1200</mtbDays>
						<partsToAffect>
							<li>Stomach</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Cirrhosis</hediff>
						<mtbDays>1800</mtbDays>
						<partsToAffect>
							<li>Liver</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>480</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.5</minSeverity>
						<baseMtbDays>120</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.95</minSeverity>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>BloodCancer</hediff>
						<mtbDays>1200</mtbDays>
						<partsToAffect>
							<li>Femur</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Toothache</hediff>
						<mtbDays>300</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Carcinoma</hediff>
						<mtbDays>480</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>BenignGrowth</hediff>
						<mtbDays>480</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>StomachUlcer</hediff>
						<mtbDays>600</mtbDays>
						<partsToAffect>
							<li>Stomach</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Cirrhosis</hediff>
						<mtbDays>1200</mtbDays>
						<partsToAffect>
							<li>Liver</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>240</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
					<li Class="HediffGiver_RandomDrugEffect">
						<hediff>Scratch</hediff>
						<minSeverity>0.5</minSeverity>
						<baseMtbDays>45</baseMtbDays>
						<partsToAffect>
							<li>Head</li>
							<li>Neck</li>
							<li>Torso</li>
							<li>Arm</li>
							<li>Leg</li>
							<li>Hand</li>
							<li>Foot</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>