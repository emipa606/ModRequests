<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Alzheimers</defName>
		<label>alzheimer's</label>
		<description>A brain disease usually associated with aging. Alzheimer's disease causes progressive degradation in the ability to think and remember. Patients are known to forget close relatives and sometimes wander around in confusion.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.003</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.65</min>
					<max>1.35</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<partEfficiencyOffset>-0.05</partEfficiencyOffset>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>15</mtbDays>
					</li>
				</mentalStateGivers>
				<forgetMemoryThoughtMtbDays>8</forgetMemoryThoughtMtbDays>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.4</minSeverity>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>12</mtbDays>
					</li>
				</mentalStateGivers>
				<forgetMemoryThoughtMtbDays>6</forgetMemoryThoughtMtbDays>
				<pctConditionalThoughtsNullified>0.20</pctConditionalThoughtsNullified>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.6</minSeverity>
				<partEfficiencyOffset>-0.25</partEfficiencyOffset>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>9</mtbDays>
					</li>
				</mentalStateGivers>
				<forgetMemoryThoughtMtbDays>4</forgetMemoryThoughtMtbDays>
				<pctConditionalThoughtsNullified>0.40</pctConditionalThoughtsNullified>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>120</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.75</minSeverity>
				<partEfficiencyOffset>-0.40</partEfficiencyOffset>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>6</mtbDays>
					</li>
				</mentalStateGivers>
				<forgetMemoryThoughtMtbDays>2</forgetMemoryThoughtMtbDays>
				<pctConditionalThoughtsNullified>0.60</pctConditionalThoughtsNullified>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.8</minSeverity>
				<partEfficiencyOffset>-0.55</partEfficiencyOffset>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>3</mtbDays>
					</li>
				</mentalStateGivers>
				<forgetMemoryThoughtMtbDays>0.5</forgetMemoryThoughtMtbDays>
				<pctConditionalThoughtsNullified>0.80</pctConditionalThoughtsNullified>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>240</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>fatal</label>
				<minSeverity>0.95</minSeverity>
				<partEfficiencyOffset>-0.75</partEfficiencyOffset>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>0.5</mtbDays>
					</li>
				</mentalStateGivers>
				<forgetMemoryThoughtMtbDays>0.1</forgetMemoryThoughtMtbDays>
				<pctConditionalThoughtsNullified>1.00</pctConditionalThoughtsNullified>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>