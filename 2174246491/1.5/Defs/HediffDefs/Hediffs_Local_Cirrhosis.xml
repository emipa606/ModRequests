<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Cirrhosis</defName>
		<label>Cirrhosis</label>
		<description>A degenerative liver disease caused by excessive alcohol consumption.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.002</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.65</min>
					<max>1.35</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
				<partEfficiencyOffset>-0.25</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<label>moderate</label>
				<partEfficiencyOffset>-0.4</partEfficiencyOffset>
				<painOffset>0.05</painOffset>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>major</label>
				<partEfficiencyOffset>-0.55</partEfficiencyOffset>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>severe</label>
				<partEfficiencyOffset>-0.7</partEfficiencyOffset>
				<painOffset>0.15</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>extreme</label>
				<partEfficiencyOffset>-0.85</partEfficiencyOffset>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.9</minSeverity>
				<label>final</label>
				<partEfficiencyOffset>-1.0</partEfficiencyOffset>
				<painOffset>0.25</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.20</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>