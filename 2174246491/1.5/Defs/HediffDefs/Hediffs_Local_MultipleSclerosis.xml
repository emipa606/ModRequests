<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>MultipleSclerosis</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>multiple sclerosis</label>
		<description>Multiple sclerosis (MS) is a demyelinating disease in which the insulating covers of nerve cells in the brain and spinal cord are damaged.</description>
		<initialSeverity>0.01</initialSeverity>
		<lethalSeverity>1.00</lethalSeverity>
		<scenarioCanAdd>true</scenarioCanAdd>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.0012</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.01</min>
					<max>5.00</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<restFallFactor>1.15</restFallFactor>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.35</minSeverity>
				<restFallFactor>1.3</restFallFactor>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>120</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.5</minSeverity>
				<restFallFactor>1.45</restFallFactor>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>90</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.65</minSeverity>
				<restFallFactor>1.6</restFallFactor>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.8</minSeverity>
				<restFallFactor>1.75</restFallFactor>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>-0.30</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.20</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>45</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>300</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.95</minSeverity>
				<restFallFactor>1.9</restFallFactor>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.50</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>-0.50</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.35</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Unease</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>150</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>