<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Stupor</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>stupor</label>
		<description>Stupor is the lack of critical mental function and a level of consciousness wherein an affected person is almost entirely unresponsive and only responds to intense stimuli such as pain.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<initialSeverity>1.0</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-0.2</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>1.0</min>
					<max>2.0</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Talking</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Eating</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>