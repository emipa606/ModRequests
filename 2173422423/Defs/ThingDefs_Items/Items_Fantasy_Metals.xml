<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--============================ Mithril ===============================-->
	
  <ThingDef ParentName="ResourceBase">
    <defName>Mithril</defName>
    <label>mithril</label>
    <description>Just like the dwarven myths, a bright silver metal stronger and lighter than steel.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Mithril</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Silver_Drop</soundInteract>
    <soundDrop>Silver_Drop</soundDrop>
    <statBases>
      <MarketValue>9.0</MarketValue>
      <Mass>0.25</Mass>
      <StuffPower_Armor_Sharp>1.05</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.75</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>1</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>1</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>1.2</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <slagDef>ChunkSlagSteel</slagDef>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>0.3</deepCommonality>
    <deepCountPerPortion>5</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>5</min>
      <max>10</max>
    </deepLumpSizeRange>
	<smeltable>true</smeltable>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.3</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(255,255,255)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>2</MaxHitPoints>
        <Beauty>2</Beauty>
        <Flammability>0</Flammability>
		<MeleeWeapon_CooldownMultiplier>0.8</MeleeWeapon_CooldownMultiplier>
      </statFactors>
    </stuffProps>
  </ThingDef>
  
