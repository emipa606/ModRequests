  <!--============================ Solorite ===============================-->
	
  <ThingDef ParentName="ResourceBase">
    <defName>Solorite</defName>
    <label>Solpyrite</label>
    <description>Also known as "fool's gold". This iron-rich mineral has a metallic sheen and a pale brass colored hue, which makes it easy to mistake for actual gold. It is however brittle and not at all as valuable as real gold, but it still makes for a beautiful material.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Solorite</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>2</MarketValue>
	  <RoyalFavorValue>0.005</RoyalFavorValue>
      <Mass>0.008</Mass>
      <StuffPower_Armor_Sharp>0.3</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.3</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>2</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>4</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>2</StuffPower_Insulation_Heat>
	  <SharpDamageMultiplier>0.3</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.3</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
	    <stackLimit>500</stackLimit>
    <smallVolume>true</smallVolume>
    <deepCommonality>0.5</deepCommonality>
    <deepCountPerPortion>8</deepCountPerPortion>
    <deepLumpSizeRange>1~4</deepLumpSizeRange>
	<smeltable>true</smeltable>
    <stuffProps>
	<stuffAdjective>golden?</stuffAdjective>
      <categories>
        <li>Metallic</li>
      </categories>
	  <appearance>Metal</appearance>
      <commonality>0.3</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(255, 245, 185)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statOffsets>
        <Beauty>10</Beauty>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>0.6</MaxHitPoints>
        <Flammability>0</Flammability>
        <Beauty>3.2</Beauty>
        <WorkToMake>0.9</WorkToMake>
        <WorkToBuild>0.9</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>1.0</MeleeWeapon_CooldownMultiplier>
