<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "Chemfuel"]/statBases</xpath>
                <value>
                    <Nutrition>0.1</Nutrition>
                </value>
            </li>
			<li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "Chemfuel"]</xpath>
                <value>
                    <socialPropernessMatters>true</socialPropernessMatters>
                    <ingestible>
		                <foodType>Fluid</foodType>
		                <maxNumToIngestAtOnce>10</maxNumToIngestAtOnce>
		                <preferability>MealLavish</preferability>
	                 	<ingestSound>Recipe_Cremate</ingestSound>
                        <ingestCommandString>Consume {0}</ingestCommandString>
                        <ingestReportString>Consuming {0}.</ingestReportString>		
	                 	<optimalityOffsetHumanlikes>16</optimalityOffsetHumanlikes>
                    </ingestible>
                </value>
            </li>
			
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "Steel"]/statBases</xpath>
                <value>
                    <Nutrition>0.09</Nutrition>
                </value>
            </li>					
			<li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "Steel"]</xpath>
                <value>
                    <socialPropernessMatters>true</socialPropernessMatters>
                    <ingestible>
		                <foodType>Fluid</foodType>
		                <maxNumToIngestAtOnce>5</maxNumToIngestAtOnce>
		                <preferability>MealLavish</preferability>
	                 	<ingestSound>Recipe_Cremate</ingestSound>
                        <ingestCommandString>Consume {0}</ingestCommandString>
                        <ingestReportString>Consuming {0}.</ingestReportString>		
	                 	<optimalityOffsetHumanlikes>16</optimalityOffsetHumanlikes>
                    </ingestible>
                </value>
            </li>			
        </operations>
    </Operation>
</Patch>