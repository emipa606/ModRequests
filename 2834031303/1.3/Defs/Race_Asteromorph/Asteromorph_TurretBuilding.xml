<Defs>
    <ThingDef ParentName="BaseWeaponTurret">
        <defName>AP_AsteromorphTurret_Gun</defName>
        <label>turret gun</label>
        <description>The gun this turret uses.</description>
        <graphicData>
            <texPath>Things/Building/Security/TurretMini_Top</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <drawSize>(1.6,1.6)</drawSize>
        </graphicData>
        <statBases>
            <AccuracyTouch>0.65</AccuracyTouch>
            <AccuracyShort>0.60</AccuracyShort>
            <AccuracyMedium>0.55</AccuracyMedium>
            <AccuracyLong>0.25</AccuracyLong>
            <RangedWeapon_Cooldown>5.2</RangedWeapon_Cooldown>
            <DeteriorationRate>0</DeteriorationRate>
            <Mass>5</Mass>
            <Flammability>0</Flammability>
        </statBases>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <defaultProjectile>AP_AsteromorphTurret_Bullet</defaultProjectile>
                <warmupTime>0</warmupTime>
                <range>22.9</range>
                <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
                <burstShotCount>2</burstShotCount>
                <soundCast>GunShotA</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
                <consumeFuelPerShot>1</consumeFuelPerShot>
            </li>
        </verbs>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>AP_AsteromorphTurret_Building</defName>
        <label>Temporary turret</label>
        <description>A quickly-made weapon commanded by an Asteromorph to aid them in combat. While being easily and quickly called, it doesn't last long.\n\nDoesn't need reloading. Vanishes after some seconds.</description>
        <thingClass>Building_TurretGun</thingClass>
        <drawerType>MapMeshAndRealTime</drawerType>
        <graphicData>
            <texPath>Things/Building/Security/TurretMini_Base</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <drawSize>(3,3)</drawSize>
            <damageData>
                <rect>(0.2,0.2,0.6,0.6)</rect>
            </damageData>
            <shadowData>
                <volume>(0.27,0.25,0.27)</volume>
                <offset>(0,0,0)</offset>
            </shadowData>
        </graphicData>
        <uiIconPath>Things/Building/Security/TurretMini_MenuIcon</uiIconPath>
        <uiIconScale>0.90</uiIconScale>
        <useHitPoints>false</useHitPoints>
        <altitudeLayer>Building</altitudeLayer>
        <stealable>false</stealable>
        <rotatable>false</rotatable>
        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <Flammability>0</Flammability>
            <WorkToBuild>1800</WorkToBuild>
            <Mass>8</Mass>
            <Beauty>-20</Beauty>
            <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
        </statBases>
        <tickerType>Normal</tickerType>
        <passability>PassThroughOnly</passability>
        <pathCost>100</pathCost>
        <fillPercent>0.4</fillPercent>
        <hasTooltip>true</hasTooltip>
        <building>
            <combatPower>45</combatPower>
            <ai_combatDangerous>true</ai_combatDangerous>
            <turretGunDef>AP_AsteromorphTurret_Gun</turretGunDef>
            <turretBurstCooldownTime>2</turretBurstCooldownTime>
            <deconstructible>false</deconstructible>
        </building>
        <comps>
            <li>
                <compClass>VFECore.Abilities.CompSpawnedBuilding</compClass>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>4</glowRadius>
                <glowColor>(219,140,98)</glowColor>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>AP_AsteromorphTurret_Bullet</defName>
        <label>shot</label>
        <graphicData>
            <texPath>Things/Projectile/Bullet_Small</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
            <color>(254,189,58)</color>
        </graphicData>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>9</damageAmountBase>
            <speed>150</speed>
        </projectile>
    </ThingDef>
</Defs>