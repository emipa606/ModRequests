                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>MeatRaw</li>
                    </categories>
                </filter>
                <count>50</count>
            </li>
        </ingredients>
        <products>
            <AP_ModularGun_Revolver>1</AP_ModularGun_Revolver>
