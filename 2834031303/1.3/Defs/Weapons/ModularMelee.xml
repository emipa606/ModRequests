<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="AP_ModularBaseMeleeWeapon" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Industrial</techLevel>
    <smeltable>true</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <weaponClasses>
      <li>Melee</li>
    </weaponClasses>
    <relicChance>0.5</relicChance>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>



  <ThingDef ParentName="AP_ModularBaseMeleeWeapon">
    <defName>AP_ModularClub</defName>
    <label>Modular Club</label>
    <description>A giant powerful club made from fleshy materials and steel. Useful for knocking people out.</description>
    <graphicData>
      <texPath>Things/ModularWeaponry/Club</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize MayRequire="CarnySenpai.EnableOversizedWeapons">(1.4,1.4)</drawSize>
    </graphicData>
    <uiIconScale>1.2</uiIconScale>
    <techLevel>Industrial</techLevel>
    <statBases>
      <WorkToMake>6500</WorkToMake>
      <Mass>4</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <weaponTags>
      <li>MedievalMeleeDecent</li>
    </weaponTags>
    <weaponClasses>
      <li>MeleeBlunt</li>
    </weaponClasses>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>18.7</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="AP_ModularBaseMeleeWeapon">
    <defName>AP_ModularSword</defName>
    <label>modular sword</label>
    <description>A long sharp sword made from fleshy materials and steel. Can slash enemies easily.</description>
    <graphicData>
      <texPath>Things/ModularWeaponry/Sword</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize MayRequire="CarnySenpai.EnableOversizedWeapons">(1.4,1.4)</drawSize>
    </graphicData>
    <uiIconScale>1.2</uiIconScale>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>MedievalMeleeDecent</li>
    </weaponTags>
    <weaponClasses>
      <li>MeleePiercer</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>12800</WorkToMake>
      <Mass>3</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>18</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="AP_ModularBaseMeleeWeapon">
    <defName>AP_ModularClaw</defName>
    <label>modular claw</label>
    <description>A long powerful spear-like claw made from fleshy materials. Can be used for stabbing.</description>
    <graphicData>
      <texPath>Things/ModularWeaponry/Claw</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize MayRequire="CarnySenpai.EnableOversizedWeapons">(1.4,1.4)</drawSize>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>LongSword</li>
    </weaponTags>
    <weaponClasses>
      <li>MeleePiercer</li>
    </weaponClasses>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <statBases>
      <WorkToMake>19000</WorkToMake>
      <Mass>2.5</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.1</cooldownTime>
      </li>
    </tools>
  </ThingDef>


</Defs>