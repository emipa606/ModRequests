<Defs>
    <RecipeDef ParentName="SurgeryFlesh">
        <defName>AP_AttachSymbioteEgg</defName>
        <label>Attach symbiote egg</label>
        <description>Attach a symbiote egg to a humanlike pawn to turn them into a Symbiote.</description>
        <workerClass>AP_AllTomorrows.Recipe_AttachSymbioteEgg</workerClass>
        <jobString>attaching egg.</jobString>
        <workAmount>500</workAmount>
        <hideBodyPartNames>true</hideBodyPartNames>
        <isViolation>true</isViolation>
        <targetsBodyPart>false</targetsBodyPart>
        <surgerySuccessChanceFactor>2</surgerySuccessChanceFactor>
        <recipeUsers>
            <li>Human</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>AP_EggSymbioteFertilized</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
    </RecipeDef>
</Defs>