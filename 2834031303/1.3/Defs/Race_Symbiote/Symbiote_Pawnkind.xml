<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<PawnKindDef Abstract="True" Name="AP_SymbioteBasePawnKind">
		<race>AP_Symbiote</race>
		<combatPower>80</combatPower>
		<initialWillRange>1~2</initialWillRange>
		<initialResistanceRange>8~20</initialResistanceRange>
		<isFighter>true</isFighter>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<forceNormalGearQuality>true</forceNormalGearQuality>

	</PawnKindDef>
	<PawnKindDef ParentName="AP_SymbioteBasePawnKind">
		<!--<defaultFactionType>WeirdColonistTribe</defaultFactionType>-->
		<defName>AP_SymbioteBasicPawnKind</defName>
		<label>Symbiote</label>
		<labelPlural>Symbiotes</labelPlural>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_PostHumanChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_PostHumanAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.65</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.35</commonality>
			</li>
		</backstoryFiltersOverride>
		<chemicalAddictionChance>0.0</chemicalAddictionChance>
		<apparelMoney>200~2000</apparelMoney>
		<apparelTags>
			<li>IndustrialAdvanced</li>
			<li>IndustrialMilitaryAdvanced</li>
			<li>SpacerMilitary</li>
		</apparelTags>
		<weaponMoney>200~2000</weaponMoney>
		<apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
		<weaponTags>
			<li>Gun</li>
			<li>Revolver</li>
		</weaponTags>
		<combatEnhancingDrugsChance>0.2</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>0~1</combatEnhancingDrugsCount>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</PawnKindDef>
	<PawnKindDef Abstract="True" Name="AP_SymbioteBossBasePawnKind" ParentName="AP_SymbioteBasePawnKind">
		<combatPower>120</combatPower>
		<gearHealthRange>1~1</gearHealthRange>
		<weaponTags>
		</weaponTags>
		<disallowedTraits>
			<li>Brawler</li>
		</disallowedTraits>
		<combatEnhancingDrugsChance>1</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>1~2</combatEnhancingDrugsCount>
		<initialWillRange>2~4</initialWillRange>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_SymbioteBossBasePawnKind">
		<defName>AP_SymbioteBossPawnKind</defName>
		<label>boss</label>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_PostHumanChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_PostHumanAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.65</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.35</commonality>
			</li>
		</backstoryFiltersOverride>
		<labelPlural>bosses</labelPlural>
		<factionLeader>true</factionLeader>
		<baseRecruitDifficulty>0.90</baseRecruitDifficulty>
		<canBeSapper>true</canBeSapper>
		<initialResistanceRange>17~27</initialResistanceRange>
		<weaponMoney>2000~4000</weaponMoney>
		<weaponTags>
		<li>AssaultRifle</li>
			<li>ShortShots</li>
			<li>IndustrialGunAdvanced</li>
			<li>SniperRifle</li>
		</weaponTags>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_SymbioteBasePawnKind">
		<defName>AP_SymbioteColonistPawnKind</defName>
		<label>Symbiote</label>
		<defaultFactionType>PlayerColony</defaultFactionType>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_PostHumanChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_PostHumanAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.65</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.35</commonality>
			</li>
		</backstoryFiltersOverride>
		<chemicalAddictionChance>0.0</chemicalAddictionChance>
		<apparelMoney>250~800</apparelMoney>
		<apparelTags>
			<li>IndustrialBasic</li>
			<li>IndustrialAdvanced</li>
		</apparelTags>
		<weaponMoney>200~700</weaponMoney>
		<weaponTags>
			<li>SimpleGun</li>
			<li>Revolver</li>
		</weaponTags>
		<combatEnhancingDrugsChance>0</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>0</combatEnhancingDrugsCount>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_SymbioteBasePawnKind">
		<defName>AP_SymbioteTraderPawnKind</defName>
		<label>symbiote trader</label>
		<trader>true</trader>
		<initialWillRange>2~3</initialWillRange>
		<initialResistanceRange>9~12</initialResistanceRange>
	</PawnKindDef>
</Defs>