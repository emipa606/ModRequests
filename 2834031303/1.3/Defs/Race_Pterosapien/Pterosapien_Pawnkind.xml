<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<PawnKindDef Abstract="True" Name="AP_PterosapienBasePawnKind">
		<race>AP_Pterosapien</race>
		<combatPower>50</combatPower>
		<initialWillRange>1~3</initialWillRange>
		<initialResistanceRange>15~24</initialResistanceRange>
		<isFighter>true</isFighter>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<forceNormalGearQuality>true</forceNormalGearQuality>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_PterosapienBasePawnKind">
		<!--<defaultFactionType>WeirdColonistTribe</defaultFactionType>-->
		<defName>AP_PterosapienBasicPawnKind</defName>
		<label>Pterosapient</label>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_PostHumanChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_PostHumanAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.65</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.35</commonality>
			</li>
		</backstoryFiltersOverride>
		<chemicalAddictionChance>0.0</chemicalAddictionChance>
		<weaponMoney>200~2000</weaponMoney>
		<apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
		<weaponTags>
			<li>Gun</li>
			<li>Revolver</li>
		</weaponTags>
		<techHediffsMoney>200~3000</techHediffsMoney>
		<techHediffsTags>
			<li>Advanced</li>
			<li>AdvancedWeapon</li>
		</techHediffsTags>
		<combatEnhancingDrugsChance>0.3</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>1~3</combatEnhancingDrugsCount>
		<biocodeWeaponChance>0.5</biocodeWeaponChance>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
		<maxGenerationAge>20</maxGenerationAge>
	</PawnKindDef>
	<PawnKindDef Abstract="True" Name="AP_PterosapienBossBasePawnKind" ParentName="AP_PterosapienBasePawnKind">
		<combatPower>130</combatPower>
		<gearHealthRange>1~1</gearHealthRange>
		<weaponMoney>2000~4000</weaponMoney>
		<weaponTags>
			<li>AssaultRifle</li>
			<li>ShortShots</li>
			<li>IndustrialGunAdvanced</li>
			<li>SniperRifle</li>
		</weaponTags>
		<disallowedTraits>
			<li>Brawler</li>
		</disallowedTraits>
		<techHediffsMoney>1000~1200</techHediffsMoney>
		<techHediffsTags>
			<li>Advanced</li>
		</techHediffsTags>
		<techHediffsChance>0.35</techHediffsChance>
		<combatEnhancingDrugsChance>0.80</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>1~2</combatEnhancingDrugsCount>
		<biocodeWeaponChance>0.8</biocodeWeaponChance>
		<initialWillRange>3~5</initialWillRange>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_PterosapienBossBasePawnKind">
		<defName>AP_PterosapienBossPawnKind</defName>
		<label>boss</label>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_PostHumanChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_PostHumanAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.65</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.35</commonality>
			</li>
		</backstoryFiltersOverride>
		<labelPlural>bosses</labelPlural>
		<factionLeader>true</factionLeader>
		<baseRecruitDifficulty>0.90</baseRecruitDifficulty>
		<canBeSapper>true</canBeSapper>
		<initialResistanceRange>17~27</initialResistanceRange>
		<maxGenerationAge>20</maxGenerationAge>
		<weaponMoney>2000~4000</weaponMoney>
		<weaponTags>
			<li>RangedHeavy</li>
			<li>ShortShots</li>
			<li>GunHeavy</li>
		</weaponTags>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_PterosapienBasePawnKind">
		<!--<defaultFactionType>WeirdColonistTribe</defaultFactionType>-->
		<defName>AP_PterosapienColonistPawnKind</defName>
		<label>Pterosapient</label>
		<defaultFactionType>PlayerColony</defaultFactionType>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_PostHumanChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_PostHumanAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.65</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.35</commonality>
			</li>
		</backstoryFiltersOverride>
		<chemicalAddictionChance>0.0</chemicalAddictionChance>
		<weaponMoney>200~800</weaponMoney>
		<weaponTags>
			<li>SimpleGun</li>
			<li>Revolver</li>
		</weaponTags>
		<combatEnhancingDrugsChance>0.1</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>0~1</combatEnhancingDrugsCount>
		<biocodeWeaponChance>0.1</biocodeWeaponChance>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
		<maxGenerationAge>22</maxGenerationAge>
		<modExtensions>
			<li Class="VFECore.Abilities.PawnKindAbilityExtension">
				<giveAbilities>
					<li>AP_PterosapienFly_Ability</li>
				</giveAbilities>
				<giveRandomAbilities>false</giveRandomAbilities>
			</li>
		</modExtensions>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_PterosapienBasePawnKind">
		<defName>AP_PterosapienTraderPawnKind</defName>
		<label>pterosapien trader</label>
		<trader>true</trader>
		<initialWillRange>2~3</initialWillRange>
		<initialResistanceRange>9~12</initialResistanceRange>
		<weaponMoney>800~1200</weaponMoney>
		<weaponTags>
			<li>RangedHeavy</li>
			<li>ShortShots</li>
		</weaponTags>
	</PawnKindDef>
</Defs>