<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<PawnKindDef Abstract="True" Name="AP_QuBasePawnKind">
		<race>AP_Qu</race>
		<combatPower>100</combatPower>
		<initialWillRange>1~3</initialWillRange>
		<initialResistanceRange>20~24</initialResistanceRange>
		<isFighter>true</isFighter>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<forceNormalGearQuality>true</forceNormalGearQuality>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_QuBasePawnKind">
		<defaultFactionType>AP_QuFaction</defaultFactionType>
		<defName>AP_QuBasicPawnKind</defName>
		<label>invader Qu</label>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_QuChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_QuAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.80</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.20</commonality>
			</li>
		</backstoryFiltersOverride>
		<maxGenerationAge>300</maxGenerationAge>
		<chemicalAddictionChance>0.0</chemicalAddictionChance>
		<apparelTags>
    </apparelTags>
		<weaponMoney>800~4000</weaponMoney>
		<weaponTags>
			<li>Gun</li>
			<li>RangedHeavy</li>
			<li>SniperRifle</li>
			<li>IndustrialGunAdvanced</li>
			<li>AssaultRifle</li>
		</weaponTags>
		<combatEnhancingDrugsChance>0.8</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>1~3</combatEnhancingDrugsCount>
		<biocodeWeaponChance>0.5</biocodeWeaponChance>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</PawnKindDef>
	<PawnKindDef Abstract="True" Name="AP_QuBossBasePawnKind" ParentName="AP_QuBasePawnKind">
		<combatPower>150</combatPower>
		<maxGenerationAge>200</maxGenerationAge>
		<gearHealthRange>1~1</gearHealthRange>
		<apparelMoney>2500~3500</apparelMoney>
		<weaponMoney>800~5000</weaponMoney>
		<weaponTags>
			<li>AssaultRifle</li>
			<li>ShortShots</li>
			<li>IndustrialGunAdvanced</li>
			<li>SniperRifle</li>
		</weaponTags>
		<disallowedTraits>
			<li>Brawler</li>
		</disallowedTraits>
		<techHediffsMoney>1000~1200</techHediffsMoney>
		<techHediffsTags>
			<li>Advanced</li>
		</techHediffsTags>
		<techHediffsChance>0.35</techHediffsChance>
		<combatEnhancingDrugsChance>0.80</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>1~2</combatEnhancingDrugsCount>
		<biocodeWeaponChance>0.3</biocodeWeaponChance>
		<initialWillRange>3~5</initialWillRange>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_QuBossBasePawnKind">
		<defName>AP_QuBossPawnKind</defName>
		<label>boss</label>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_QuChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_QuAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.80</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.20</commonality>
			</li>
		</backstoryFiltersOverride>
		<labelPlural>bosses</labelPlural>
		<factionLeader>true</factionLeader>
		<baseRecruitDifficulty>0.90</baseRecruitDifficulty>
		<canBeSapper>true</canBeSapper>
		<initialResistanceRange>17~27</initialResistanceRange>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_QuBasePawnKind">
		<!--<defaultFactionType></defaultFactionType>-->
		<defName>AP_QuColonistPawnKind</defName>
		<label>irregular Qu</label>
		<defaultFactionType>PlayerColony</defaultFactionType>
		<backstoryFiltersOverride>
			<li>
				<categoriesChildhood>
					<li>AP_QuChildBackstories</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>AP_QuAdultBackstories</li>
				</categoriesAdulthood>
				<commonality>0.80</commonality>
			</li>
			<li>
				<categoriesChildhood>
					<li>Offworld</li>
				</categoriesChildhood>
				<categoriesAdulthood>
					<li>Offworld</li>
				</categoriesAdulthood>
				<commonality>0.20</commonality>
			</li>
		</backstoryFiltersOverride>
		<maxGenerationAge>300</maxGenerationAge>
		<chemicalAddictionChance>0.0</chemicalAddictionChance>
		<apparelTags>
		</apparelTags>
		<weaponMoney>200~800</weaponMoney>
		<weaponTags Inherit="False">
			<li>SimpleGun</li>
			<li>Revolver</li>
		</weaponTags>
		<combatEnhancingDrugsChance>0.1</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>0~1</combatEnhancingDrugsCount>
		<biocodeWeaponChance>0.1</biocodeWeaponChance>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
		<modExtensions>
			<li Class="VFECore.Abilities.PawnKindAbilityExtension">
				<giveAbilities>
					<li>AP_QuTransformAbility</li>
				</giveAbilities>
				<giveRandomAbilities>false</giveRandomAbilities>
			</li>
		</modExtensions>
	</PawnKindDef>
	<PawnKindDef ParentName="AP_QuBasePawnKind">
		<defName>AP_QuTraderPawnKind</defName>
		<label>Qu trader</label>
		<trader>true</trader>
		<initialWillRange>2~3</initialWillRange>
		<initialResistanceRange>12~14</initialResistanceRange>
		<weaponMoney>800~2000</weaponMoney>
		<weaponTags>
			<li>AssaultRifle</li>
			<li>ShortShots</li>
			<li>IndustrialGunAdvanced</li>
			<li>SniperRifle</li>
		</weaponTags>
	</PawnKindDef>
</Defs>