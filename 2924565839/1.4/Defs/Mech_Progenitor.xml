<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="LightMechanoid">
		<defName>MP_Mech_Progenitor</defName>
		<label>progenitor</label>
		<description>A mechanoid designed for the sole purpose of gestating and growing new mechanoids. It is not equipped with any weapons or defenses, but instead is fitted with advanced machinery that allows it to gestate new mechanoids quickly and efficiently without a mechanitor.</description>
		<race>
		<mechEnabledWorkTypes>
			<li>Smithing</li>
		</mechEnabledWorkTypes>
		<lifeStageAges>
			<li>
				<def>MechanoidFullyFormed</def>
				<minAge>0</minAge>
				<soundWounded>Pawn_Mech_Fabricor_Wounded</soundWounded>
				<soundDeath>Pawn_Mech_Fabricor_Death</soundDeath>
				<soundCall>Pawn_Mech_Fabricor_Call</soundCall>
			</li>
			<li>
				<def>MechanoidFullyFormed</def>
				<minAge>100</minAge>
				<soundWounded>Pawn_Mech_Fabricor_Wounded</soundWounded>
				<soundDeath>Pawn_Mech_Fabricor_Death</soundDeath>
				<soundCall>Pawn_Mech_Fabricor_Call</soundCall>
			</li>
		</lifeStageAges>
		</race>
	</ThingDef>
	
	<PawnKindDef ParentName="NonCombatLightMechanoidKind">
		<defName>MP_Mech_Progenitor_Kind</defName>
		<label>progenitor</label>
		<race>MP_Mech_Progenitor</race>
		<lifeStages>
		<li>
			<bodyGraphicData>
			<texPath>Things/Pawn/Mechanoid/Progenitor</texPath>
			<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Progenitor</maskPath>
			<shaderType>CutoutWithOverlay</shaderType>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>1.1</drawSize>
			</bodyGraphicData>
		</li>
		<li>
			<bodyGraphicData>
			<texPath>Things/Pawn/Mechanoid/Progenitor</texPath>
			<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Progenitor</maskPath>
			<shaderType>CutoutWithOverlay</shaderType>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>1.1</drawSize>
			</bodyGraphicData>
		</li>
		</lifeStages>
	</PawnKindDef>

	<RecipeDef ParentName="MediumMechanoidRecipe">
        <defName>MP_Progenitor</defName>
        <label>gestate progenitor</label>
        <description>Gestate a progenitor mechanoid.</description>
		<researchPrerequisite>UltraMechtech</researchPrerequisite>
        <ingredients Inherit="False">
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>150</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>50</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>6</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>SubcoreHigh</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Mechlink</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <MP_Mech_Progenitor>1</MP_Mech_Progenitor>
        </products>
        <descriptionHyperlinks>
            <ThingDef>MP_Mech_Progenitor</ThingDef>
        </descriptionHyperlinks>
    </RecipeDef>
</Defs>