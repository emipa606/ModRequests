<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<SoundDef>
		<defName>SnowCrawlerStartup</defName>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>snowcrawlerstartup</clipPath>
					</li>
				</grains>
				<volumeRange>45~50</volumeRange>
			</li>
		</subSounds>
	</SoundDef>

	<SoundDef>
		<defName>SnowCrawlerShutdown</defName>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>snowcrawlershutdown</clipPath>
					</li>
				</grains>
				<volumeRange>45~50</volumeRange>
			</li>
		</subSounds>
	</SoundDef>

	<SoundDef>
		<defName>SnowCrawlerHatch</defName>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>snowcrawlerhatch</clipPath>
					</li>
				</grains>
				<volumeRange>30~35</volumeRange>
			</li>
		</subSounds>
	</SoundDef>

	<SoundDef>
		<defName>SnowCrawlerLoop</defName>
		<sustain>true</sustain>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<priorityMode>PrioritizeNearest</priorityMode>
		<subSounds>
			<li>
				<muteWhenPaused>True</muteWhenPaused>
				<grains>
					<li Class="AudioGrain_Clip">
					<clipPath>snowcrawlerloop</clipPath>
					</li>
				</grains>
				<pitchRange>0.98~1</pitchRange>
				<volumeRange>25~25</volumeRange>
				<sustainAttack>2.5</sustainAttack>
				<sustainRelease>2.5</sustainRelease>
			</li>
		</subSounds>
	</SoundDef>

	<SoundDef>
		<defName>SnowCrawlerBuilt</defName>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>snowcrawlerbuilt</clipPath>
					</li>
				</grains>
				<volumeRange>30~30</volumeRange>
			</li>
		</subSounds>
	</SoundDef>

</Defs>