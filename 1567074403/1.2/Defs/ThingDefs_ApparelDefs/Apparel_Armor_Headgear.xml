	<careIfWornByCorpse>false</careIfWornByCorpse>
	<!--<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>-->
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Combat_Headgear/PT_A_Bravo_Revenant</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <!--<li>IndustrialMilitaryAdvanced</li>-->
        <li>RH_Helmet_Ghosts_Revenant</li>
		<li>RH_Helmet_Ghosts</li>
		<li>PassiveCamo_Urban_Med</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
  </ThingDef>
  
