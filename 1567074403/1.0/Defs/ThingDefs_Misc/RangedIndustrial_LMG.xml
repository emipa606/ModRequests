<Defs>

  <!-- ================================= LMG ==================================== -->
        
		<!-- ================================= M240B ==================================== -->
  
	<ThingDef ParentName="RNBaseLMG">
		<defName>RNGun_M240B</defName>
		<label>M240B</label>
		<description>The M240, officially the Machine Gun, 7.62 mm, M240, is the US military designation for the FN MAG ("Mitrailleuse A Gaz" = Gas operated machine gun; alternatively, "Mitrailleuse d'Appui General" = machine gun, support, general) a family of belt-fed, gas-operated medium machine guns that chamber the 7.62×51mm NATO cartridge.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/LMG/M240Bravo</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
		<statBases>
			<WorkToMake>33000</WorkToMake>
			<Mass>11</Mass>
			<AccuracyTouch>0.47</AccuracyTouch>
			<AccuracyShort>0.58</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.35</AccuracyLong>
			<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>6</ComponentIndustrial>
		</costList>
		
				<equippedAngleOffset>40</equippedAngleOffset>
		
    <verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>RNBullet_762x51mm_LMG</defaultProjectile>
				<warmupTime>1.8</warmupTime>
				<range>27.9</range>
				<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
				<burstShotCount>8</burstShotCount>
				<soundCast>RNShotM240B</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<weaponTags>
			<!--<li>IndustrialGunAdvanced</li>-->
			<li>RNGun_M240B</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef> 
  
