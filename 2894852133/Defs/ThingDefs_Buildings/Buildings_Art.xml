<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Christian -->
	
	
  <ThingDef ParentName="SculptureBase">
    <defName>SculptureChristian_Small</defName>
    <label>small crucifix</label>
    <description>A small crucifix that sits upon a pedestal, crafted in a Christian style.</description>
    <castEdgeShadows>false</castEdgeShadows>
	  <recipeMaker>
		  <memePrerequisitesAny>
			  <li>Christian_Values</li>
		  </memePrerequisitesAny>
	  </recipeMaker>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/BuildingStyles/Christian/Crucifix/CrucifixSmallChristian</texPath>
    </graphicData>
	<fillPercent>1</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>3</Mass>
      <Beauty>25</Beauty>
      <WorkToMake>10000</WorkToMake>
	  <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
    </statBases>
    <stuffCategories>
		<li>Metallic</li>
		<li>Woody</li>
		<li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
  </ThingDef>

	<ThingDef ParentName="SculptureBase">
		<defName>SculptureChristian_Large</defName>
		<label>large crucifix</label>
		<description>A person-sized crucifix in a Christian style.</description>
		<castEdgeShadows>false</castEdgeShadows>
		<recipeMaker>
			<memePrerequisitesAny>
				<li>Christian_Values</li>
			</memePrerequisitesAny>
		</recipeMaker>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/BuildingStyles/Christian/Crucifix/CrucifixLargeChristian</texPath>
			<drawSize>(1.25,1.25)</drawSize>
			<shadowData>
				<volume>(0.2, 0.35, 0.13)</volume>
				<offset>(-0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<fillPercent>1</fillPercent>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>110</MaxHitPoints>
			<Mass>7</Mass>
			<Beauty>60</Beauty>
			<WorkToMake>20000</WorkToMake>
			<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
	</ThingDef>

	<ThingDef ParentName="SculptureBase">
		<defName>SculptureChristian_Grand</defName>
		<label>grand crucifix</label>
		<description>a floor to ceiling grand crucifix in a classic Christian style.</description>
		<castEdgeShadows>false</castEdgeShadows>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Artistic</workSkill>
			<unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
			<effectWorking>Sculpt</effectWorking>
			<soundWorking>Recipe_Sculpt</soundWorking>
			<recipeUsers>
				<li>TableSculpting</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<disallowedThingDefs>
					<li>Plasteel</li>
					<li>Uranium</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
			<memePrerequisitesAny>
				<li>Christian_Values</li>
			</memePrerequisitesAny>
		</recipeMaker>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/BuildingStyles/Christian/Crucifix/CrucifixGrandChristian</texPath>
			<drawSize>(3,3)</drawSize>
			<shadowData>
				<volume>(0.6, 0.6, 0.6)</volume>
				<offset>(-0.05,0,-0.55)</offset>
			</shadowData>
		</graphicData>
		<fillPercent>0.5</fillPercent>
		<rotatable>false</rotatable>
		<size>(2,2)</size>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<Mass>20</Mass>
			<Beauty>350</Beauty>
			<WorkToMake>80000</WorkToMake>
			<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">20</StyleDominance>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>300</costStuffCount>
	</ThingDef>
	
</Defs> 