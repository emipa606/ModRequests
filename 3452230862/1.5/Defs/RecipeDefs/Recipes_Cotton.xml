<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<RecipeDef>
		<defName>SK117_MakeCloth</defName>
		<label>spin raw cotton</label>
		<description>Spin raw cotton into cloth fabric.</description>
        <jobString>Spinning raw cotton.</jobString>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>400</workAmount>
		<workSkill>Crafting</workSkill>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkillLearnFactor>0.3</workSkillLearnFactor>
		<targetCountAdjustment>10</targetCountAdjustment>
        <recipeUsers>
            <li>CraftingSpot</li>
			<li>HandTailoringBench</li>
			<li>ElectricTailoringBench</li>
            <li MayRequire="PrimitiveProduction.velcroboy333">VBY_PrimitiveCraftingTable</li>
            <li MayRequire="PrimitiveProduction.velcroboy333">VBY_PrimitiveTailoringTable</li>
			<li MayRequire="PrimitiveProduction.velcroboy333">VBY_PrimitiveLoom</li>
		</recipeUsers>
        <researchPrerequisites>
			<li>SK117_CottonSpinning</li>
		</researchPrerequisites>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SK117_RawCotton</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SK117_RawCotton</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Cloth>10</Cloth>
		</products>
	</RecipeDef>

