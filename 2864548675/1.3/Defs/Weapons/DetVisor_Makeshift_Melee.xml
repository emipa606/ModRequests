	<!-- DV_MakeshiftHammer -->
	<ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
		<defName>DV_MakeshiftHammer</defName>
		<label>Makeshift Hammer</label>
		<description>A small, improvised hammer, built out of an ancient car piston and old parts, the uneven weight makes it unreliable for damage.</description>
		<graphicData>
			<texPath>Things/Melee_Weapons/DV_MakeshiftHammer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<weaponTags>
			<li>MakeshiftMelee</li>
			<li>MakeshiftGun</li>
		</weaponTags>
		<!-- <stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>110</costStuffCount> -->
		<costList>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<Mass>2.2</Mass>
		</statBases>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>head</label>
				<labelUsedInLogging>false</labelUsedInLogging>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>14.0</power>
				<cooldownTime>2.4</cooldownTime>
			</li>
			<li>
				<label>head</label>
				<labelUsedInLogging>false</labelUsedInLogging>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>18.0</power>
				<cooldownTime>2.4</cooldownTime>
			</li>
			<li>
				<label>head</label>
				<labelUsedInLogging>false</labelUsedInLogging>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>20.0</power>
				<cooldownTime>2.4</cooldownTime>
			</li>
			<li>
				<label>head</label>
