<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenPartDef>
    <defName>NAT_StartingRustedSoldier</defName>
    <label>start with rusted soldier</label>
    <scenPartClass>NAT.ScenPart_StartingRustedSoldier</scenPartClass>
    <category>StartingImportant</category>
    <selectionWeight>0</selectionWeight>
    <summaryPriority>100</summaryPriority>
  </ScenPartDef>

  <ScenarioDef>
    <defName>NAT_Cultists</defName>
    <label>Outlaw cultists</label>
    <description>You did not see eye to eye with the cult leaders and, realizing the problems ahead, decided to flee. Now your goal is to develop your understanding of emptiness into a new faith with only what you managed to steal.</description>
    <scenario>
      <summary>Two outlaw cultists with all their stuff.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>NAT_PlayerCult</factionDef>
      </playerFaction>
      <parts>

        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>2</pawnCount>
          <pawnChoiceCount>6</pawnChoiceCount>
        </li>

        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
          <visible>false</visible>
        </li>
		
		<li Class="NAT.ScenPart_StartingRustedSoldier">
          <def>NAT_StartingRustedSoldier</def>
          <pawnKind>NAT_RustedRifleman</pawnKind>
        </li>
        <li Class="NAT.ScenPart_StartingRustedSoldier">
          <def>NAT_StartingRustedSoldier</def>
          <pawnKind>NAT_RustedGunner</pawnKind>
        </li>
        
        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>400</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>40</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineIndustrial</thingDef>
          <count>15</count>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>NAT_RustedActivator_Regeneration</thingDef>
          <count>3</count>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>NAT_RustedActivator_Speed</thingDef>
          <count>1</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentIndustrial</thingDef>
          <count>25</count>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Shard</thingDef>
          <count>3</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>NerveSpiker</thingDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MeleeWeapon_Gladius</thingDef>
          <stuff>Bioferrite</stuff>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Apparel_FlakVest</thingDef>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>NAT_PainBeacon</thingDef>
          <count>1</count>
        </li>
		
		<!-- Starting research -->
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>NAT_RustedSoldiers</project>
        </li>
		<li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>Smithing</project>
        </li>
		

        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>250</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>200</count>
        </li>      

        <!-- Scatter some things anywhere -->
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>Steel</thingDef>
          <count>400</count>
        </li>
		<li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>Bioferrite</thingDef>
          <count>150</count>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>7</count>
        </li>
        
        <!-- Game start dialog -->
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>You did not see eye to eye with the cult leaders and, realizing the problems ahead, decided to flee. Now your goal is to develop your understanding of emptiness into a new faith with only what you managed to steal.</text>
          <closeSound>GameStartSting</closeSound>
        </li>
		
		<li Class="ScenPart_MonolithGeneration">
          <def>ScenPart_MonolithGeneration</def>
          <method>NearColonists</method>
        </li>
        
      </parts>
    </scenario>
  </ScenarioDef>
  
  <FactionDef ParentName="PlayerFactionBase">
    <defName>NAT_PlayerCult</defName>
    <label>Outlaw cultists</label>
    <description>A group of outlaw cultists.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>NAT_PlayerCultist</basicMemberKind>
    <pawnSingular>cultist</pawnSingular>
    <pawnsPlural>cultists</pawnsPlural>
    <techLevel>Industrial</techLevel>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <allowedCultures><li>Astropolitan</li></allowedCultures>
    <backstoryFilters>
      <li>
        <categories>
          <li>Cult</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <startingResearchTags>
      <li>ClassicStart</li>
    </startingResearchTags>
    <startingTechprintsResearchTags>
      <li>ClassicStart</li>
      <li>ClassicStartTechprints</li>
    </startingTechprintsResearchTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
      </thingDefs>
    </apparelStuffFilter>
  </FactionDef>
  
  <PawnKindDef ParentName="BasePlayerPawnKind">
	<defName>NAT_PlayerCultist</defName>
    <label>cultist</label>
    <defaultFactionType>NAT_PlayerCult</defaultFactionType>
	<apparelColor>(85, 85, 85)</apparelColor>
    <styleItemTags>
      <li>
        <tag>Cultist</tag>
        <baseWeight>5</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
    </styleItemTags>
    <startingHediffs>
      <li>
        <def>Inhumanized</def>
      </li>
	  <li>
        <def>Tentacle</def>
        <chance>0.15</chance>
      </li>
      <li>
        <def>BlissLobotomy</def>
        <chance>0.05</chance>
      </li>
      <li>
        <def>FleshWhip</def>
        <chance>0.05</chance>
      </li>
	  <li>
        <def>Metalblood</def>
        <durationTicksRange>60000~300000</durationTicksRange> <!-- 1~5 days -->
		<chance>0.05</chance>
      </li>
      <li>
        <def>DeathRefusal</def>
		<chance>0.03</chance>
      </li>
    </startingHediffs>
	<specificApparelRequirements>
      <li>
        <bodyPartGroup>Torso</bodyPartGroup>
        <alternateTagChoices>
          <li>
            <tag>Robe</tag>
            <chance>1</chance>
          </li>
        </alternateTagChoices>
      </li>
      <li>
        <bodyPartGroup>FullHead</bodyPartGroup>
        <requiredTag>HoraxianCeremonial</requiredTag>
        <useRandomStyleDef>true</useRandomStyleDef>
      </li>
      <li>
        <color>(85, 85, 85)</color>
      </li>
    </specificApparelRequirements>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
	<initialResistanceRange>13~21</initialResistanceRange>
  </PawnKindDef>
  
</Defs>
