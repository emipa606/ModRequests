<?xml version="1.0" encoding="utf-8"?>

<Defs>
  
  <HediffDef>
    <defName>NAT_PainQuenchSerum</defName>
    <label>pain quench</label>
    <hediffClass>NAT.Hediff_PainQuench</hediffClass>
    <description>This creature has the pain quench serum in their bloodstream. This substance makes it fully resistant to any pain source and additionally suppress induced pain.</description>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_DisappearsDisableable">
        <disappearsAfterTicks>60000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath" />
    </comps>
    <stages>
      <li>
        <painFactor>0</painFactor>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_InducedPain</defName>
    <label>induced pain</label>
    <description>A pain without any visible reason.</description>
    <initialSeverity>0.001</initialSeverity>
	<hediffClass>NAT.Hediff_InducedPain</hediffClass>
	<isBad>false</isBad>
    <maxSeverity>10</maxSeverity>
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>5000~15000</disappearsAfterTicks>
		<showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_RustedRegeneration</defName>
    <label>rusted regeneration</label>
    <description>Rusted regeneration.</description>
    <isBad>false</isBad>
    <stages>
      <li>
        <regeneration>40</regeneration>
		<minSeverity>0</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <regeneration>75</regeneration>
		<minSeverity>0.3</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <regeneration>95</regeneration>
		<minSeverity>0.5</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <regeneration>120</regeneration>
		<minSeverity>0.7</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <regeneration>200</regeneration>
		<minSeverity>0.9</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_ShockFromLair</defName>
    <label>void shock</label>
    <description>A shock gained in cage from dark metal.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<isBad>false</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-12.00</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
	<givesInfectionPathways>
      <li>NAT_ByCollector</li>
    </givesInfectionPathways>
  </HediffDef>
  
  <InfectionPathwayDef>
    <defName>NAT_ByCollector</defName>
    <label>implanted by collector</label>
  </InfectionPathwayDef>
  
  <HediffDef>
    <defName>NAT_HediffCollector</defName>
    <label>collector</label>
    <description>This creature is collector, entity that wants to collect everything valuable including humans.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<isBad>false</isBad>
    <stages>
      <li>
		<painOffset>-0.85</painOffset>
		<minSeverity>0</minSeverity>
        <regeneration>30</regeneration>
        <showRegenerationStat>false</showRegenerationStat>
      </li>
	  <li>
	    <label>rage</label>
		<painFactor>0</painFactor>
	    <minSeverity>0.6</minSeverity>
        <regeneration>100</regeneration>
        <showRegenerationStat>false</showRegenerationStat>
		<statFactors>
          <MoveSpeed>2</MoveSpeed>
		  <MeleeCooldownFactor>0.80</MeleeCooldownFactor>
		  <MeleeDamageFactor>1.5</MeleeDamageFactor>
		  <StaggerDurationFactor>0</StaggerDurationFactor>
        </statFactors>
		<statOffsets>
	      <MeleeHitChance>10</MeleeHitChance>
	    </statOffsets>
		<damageFactors>
          <Flame>0.5</Flame>
          <Burn>0.5</Burn>
        </damageFactors>
	  </li>
	  <li>
	    <label>rage</label>
		<painFactor>0</painFactor>
	    <minSeverity>0.75</minSeverity>
        <regeneration>200</regeneration>
        <showRegenerationStat>false</showRegenerationStat>
		<statFactors>
          <MoveSpeed>3</MoveSpeed>
		  <MeleeCooldownFactor>0.65</MeleeCooldownFactor>
		  <MeleeDamageFactor>1.75</MeleeDamageFactor>
		  <StaggerDurationFactor>0</StaggerDurationFactor>
        </statFactors>
		<statOffsets>
	      <MeleeHitChance>20</MeleeHitChance>
	    </statOffsets>
		<damageFactors>
          <Flame>0.5</Flame>
          <Burn>0.5</Burn>
        </damageFactors>
	  </li>
	  <li>
	    <label>rage</label>
		<painFactor>0</painFactor>
	    <minSeverity>0.9</minSeverity>
        <regeneration>400</regeneration>
        <showRegenerationStat>false</showRegenerationStat>
		<statFactors>
          <MoveSpeed>4</MoveSpeed>
		  <MeleeCooldownFactor>0.5</MeleeCooldownFactor>
		  <MeleeDamageFactor>2</MeleeDamageFactor>
		  <StaggerDurationFactor>0</StaggerDurationFactor>
        </statFactors>
		<statOffsets>
	      <MeleeHitChance>40</MeleeHitChance>
	    </statOffsets>
		<damageFactors>
          <Flame>0.5</Flame>
          <Burn>0.5</Burn>
        </damageFactors>
	  </li>
    </stages>
  </HediffDef>

</Defs>