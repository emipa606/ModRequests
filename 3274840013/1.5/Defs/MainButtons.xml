<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <MainButtonDef>
    <defName>NAT_Rusts</defName>
    <label>rusted soldiers</label>
    <description>View and organize the colony's rusts.</description>
    <workerClass>NAT.MainButtonWorker_ToggleRustsTab</workerClass>
    <tabWindowClass>NAT.MainTabWindow_Rusts</tabWindowClass>
    <order>79</order>
    <validWithoutMap>false</validWithoutMap>
    <minimized>True</minimized>
    <iconPath>UI/NAT_Rusts</iconPath>
	<closesWorldView>true</closesWorldView>
  </MainButtonDef>
  
  <PawnTableDef>
    <defName>NAT_Rusts</defName>
    <workerClass>NAT.PawnTable_Rusts</workerClass>
    <columns>
      <li>LabelWithIcon</li>
      <li>NAT_RustedWeapon</li>
      <li>NAT_DraftRusts</li>
      <li>GapTiny</li>
      <li>NAT_HealthRusts</li>
      <li>NAT_AllowedAreaRusts</li>
      <li>RemainingSpace</li>
    </columns>
  </PawnTableDef>
  
  <PawnColumnDef>
    <defName>NAT_RustedWeapon</defName>
    <workerClass>NAT.PawnColumnWorker_RustedWeapon</workerClass>
    <sortable>false</sortable>
  </PawnColumnDef>
  
  <PawnColumnDef>
    <defName>NAT_HealthRusts</defName>
    <label>energy</label>
    <workerClass>NAT.PawnColumnWorker_HealthRusts</workerClass>
  </PawnColumnDef>
  
  <PawnColumnDef ParentName="AllowedArea">
    <defName>NAT_AllowedAreaRusts</defName>
    <headerTip>Allowed areas only apply for rusted soldiers.</headerTip>
    <sortable>false</sortable>
  </PawnColumnDef>

  <PawnColumnDef>
    <defName>NAT_DraftRusts</defName>
    <label>draft</label>
    <workerClass>NAT.PawnColumnWorker_DraftRusts</workerClass>
    <paintable>true</paintable>
  </PawnColumnDef>

</Defs>