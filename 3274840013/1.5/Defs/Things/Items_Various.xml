        <jobString>open bag</jobString>
		<activateLabelString>Order bag opening</activateLabelString>
		<activateDescString>Order someone to open the bag.</activateDescString>
		<guiLabelString>Choose who should open bag.</guiLabelString>
		<activatingString>opening bag</activatingString>
		<activatingStringPending>opening bag</activatingStringPending>
        <showMustBeActivatedByColonist>false</showMustBeActivatedByColonist>
        <targetingParameters>
          <canTargetBuildings>false</canTargetBuildings>
          <canTargetAnimals>false</canTargetAnimals>
          <canTargetMechs>false</canTargetMechs>
          <onlyTargetControlledPawns>true</onlyTargetControlledPawns>
        </targetingParameters>
      </li>
    </comps>
  </ThingDef>
  
