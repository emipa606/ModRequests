<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/FactionDef[defName = "Entities"]/pawnGroupMakers</xpath>
    <value>
      <li>
        <!-- Raid - Infantry-->
        <kindDef>NAT_RustedArmy</kindDef>
        <commonality>100</commonality>
        <options>
		  <NAT_RustedFieldMarshal>1</NAT_RustedFieldMarshal>
		  <NAT_RustedRifleman>6</NAT_RustedRifleman>
		  <NAT_RustedGunner>3</NAT_RustedGunner>
		  <NAT_RustedHussar>2</NAT_RustedHussar>
        </options>
      </li>
	  <li>
        <!-- Raid - Low range x Melee-->
        <kindDef>NAT_RustedArmy</kindDef>
        <commonality>50</commonality>
        <options>
		  <NAT_RustedFieldMarshal>1</NAT_RustedFieldMarshal>
		  <NAT_RustedRifleman>1</NAT_RustedRifleman>
		  <NAT_RustedGunner>1</NAT_RustedGunner>
		  <NAT_RustedHussar>10</NAT_RustedHussar>
		  <NAT_RustedGrenadier>3</NAT_RustedGrenadier>
		  <NAT_RustedTrooper>5</NAT_RustedTrooper>
        </options>
      </li>
	  <li>
        <!-- Raid Heavy Infantry-->
        <kindDef>NAT_RustedArmy</kindDef>
        <commonality>70</commonality>
        <options>
		  <NAT_RustedFieldMarshal>1</NAT_RustedFieldMarshal>
		  <NAT_RustedRifleman>4</NAT_RustedRifleman>
		  <NAT_RustedGunner>11</NAT_RustedGunner>
		  <NAT_RustedHussar>4</NAT_RustedHussar>
		  <NAT_RustedTrooper>5</NAT_RustedTrooper>
        </options>
      </li>
	  <li>
	    <!-- Void Structure Defence-->
        <kindDef>NAT_RustedArmy_Defence</kindDef>
        <commonality>100</commonality>
        <options>
		  <NAT_RustedFieldMarshal>100</NAT_RustedFieldMarshal>
		  <NAT_EliteRustedSoldier>5</NAT_EliteRustedSoldier>
		  <NAT_RustedRifleman>5</NAT_RustedRifleman>
		  <NAT_RustedGunner>7</NAT_RustedGunner>
		  <NAT_RustedHussar>5</NAT_RustedHussar>
		  <NAT_RustedTrooper>3</NAT_RustedTrooper>
        </options>
	  </li>
	  <li>
	    <!-- Rusted mass drop-->
        <kindDef>NAT_RustedSphereDrop</kindDef>
        <commonality>100</commonality>
        <options>
		  <NAT_RustedRifleman>100</NAT_RustedRifleman>
		  <NAT_RustedGunner>75</NAT_RustedGunner>
		  <NAT_RustedHussar>50</NAT_RustedHussar>
        </options>
	  </li>
	  <li MayRequire="22.AnomalyPortal">
		<kindDef>AP_MetalStormGroup</kindDef>
		<commonality>7</commonality>
		<options>
		  <Metalhorror>20</Metalhorror>
		  <NAT_RustedFieldMarshal>5</NAT_RustedFieldMarshal>
		  <NAT_RustedRifleman>20</NAT_RustedRifleman>
		  <NAT_RustedGunner>15</NAT_RustedGunner>
		  <NAT_RustedHussar>30</NAT_RustedHussar>
		  <NAT_RustedGrenadier>10</NAT_RustedGrenadier>
		  <NAT_RustedTrooper>15</NAT_RustedTrooper>
		</options>
	  </li>
    </value>
  </Operation> 
  
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/HediffDef[defName = "MetalhorrorImplant"]/possiblePathways</xpath>
    <value>
      <NAT_ByCollector>Implanted by collector in his lair</NAT_ByCollector>
    </value>
  </Operation> 
  
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingSetMakerDef[defName = "Reward_GrayBox"]/root/options</xpath>
    <value>
      <li>
          <weight>0.4</weight>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>NAT_RustedSculpture_Rifleman</li>
				  <li>NAT_RustedSculpture_Gunner</li>
				  <li>NAT_RustedSculpture_Hussar</li>
                </thingDefs>
              </filter>
              <countRange>1</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
		<li>
          <weight>0.3</weight>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>NAT_Apparel_PainLance</li>
                </thingDefs>
              </filter>
              <countRange>1</countRange>
            </fixedParams>
