              </filter>
              <countRange>1</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
		<li>
          <weight>0.1</weight>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>NAT_RustedSculpture_Rifleman</li>
				  <li>NAT_RustedSculpture_Gunner</li>
				  <li>NAT_RustedSculpture_Hussar</li>
                </thingDefs>
              </filter>
              <countRange>1</countRange>
