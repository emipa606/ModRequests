                <thingDefs>
                  <li>NAT_PainQuenchSerum</li>
                </thingDefs>
              </filter>
              <countRange>6~10</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
    </value>
  </Operation> 
  
