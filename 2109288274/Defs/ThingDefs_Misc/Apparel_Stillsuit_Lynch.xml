<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Stillsuit_Lynch</defName>
    <label>stillsuit</label>
    <description>A stillsuit, designed for long-term operation in oppressively hot environments, it also recycles waste water to make a traveler almost self-sufficient for water in the desert. (Lynch pattern).</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>

    <graphicData>
      <texPath>Resource/Apparel/Lynchsuit/Lynchsuit_Packed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>60000</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>30</Insulation_Heat>
      <EquipDelay>10</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
    <wornGraphicPath>Resource/Apparel/Lynchsuit/Lynchsuit</wornGraphicPath>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

</Defs>
