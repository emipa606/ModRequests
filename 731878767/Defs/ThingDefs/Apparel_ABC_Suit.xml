<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 

  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_ABC_Helmet</defName>
    <label>environmental protection helmet</label>
    <description>A helmet with an airfilter for using in hazardous situations to protect from airborne toxins. Wearing this will protect you well, but aiming will be a bit harder.</description>
	<techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/ABC_Suit/Helmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
	<recipeMaker>
      <researchPrerequisite>ABC_Suit</researchPrerequisite>
	  <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <ArmorRating_Sharp>0.02</ArmorRating_Sharp>
	  <Insulation_Heat>2</Insulation_Heat>
	  <Insulation_Cold>5</Insulation_Cold>
	  <Mass>1.2</Mass>
    </statBases>
    <equippedStatOffsets>
	  <ShootingAccuracyPawn>-0.25</ShootingAccuracyPawn>
	  <ToxicSensitivity>-0.35</ToxicSensitivity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/ABC_Suit/Helmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_ABC_Pants</defName>
    <label>environmental protection pants</label>
    <description>A heavy set of pants with protection against atomic, biological and chemical hazards. Wearing this will protect you well, but impair your movement greatly. At least it's large enough to allow you to wear clothes beneath it.</description>
	<techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/ABC_Suit/Pants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
	<recipeMaker>
      <researchPrerequisite>ABC_Suit</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <WorkToMake>7500</WorkToMake>
      <ArmorRating_Sharp>0.01</ArmorRating_Sharp>
	  <Insulation_Heat>2</Insulation_Heat>
	  <Insulation_Cold>5</Insulation_Cold>
	  <Mass>2</Mass>
    </statBases>
	<equippedStatOffsets>
	  <ToxicSensitivity>-0.20</ToxicSensitivity>
	  <MoveSpeed>-1.0</MoveSpeed>
	  <CarryingCapacity>-10</CarryingCapacity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>Shell</li>
      </layers>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>RGBA(0.87,0.56,0.29,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  
