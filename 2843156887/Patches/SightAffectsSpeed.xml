<Patch>
	<!--MoveSpeed-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/StatDef[defName="MoveSpeed"]/capacityFactors</xpath>
		<value>
		  <li>
			<capacity>Sight</capacity>
			<weight>0.4</weight>
			<allowedDefect>0.5</allowedDefect>
