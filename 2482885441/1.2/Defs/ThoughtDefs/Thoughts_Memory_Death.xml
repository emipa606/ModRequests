<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Adds thought for colonist death due to sacrificer belt -->
	<ThoughtDef ParentName="DeathMemory">
		<defName>KnowColonistSacrificed</defName>
		<durationDays>10</durationDays>
		<stackLimit>5</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>colonist sacrificed</label>
				<description>One of our people died because of me. I am a threat to everyone else's lives.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- Adds thought for prisoner death due to sacrificer belt -->
	<ThoughtDef ParentName="DeathMemory">
		<defName>KnowPrisonerSacrificed</defName>
		<durationDays>6</durationDays>
		<stackLimit>5</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>prisoner sacrificed</label>
				<description>One of our prisoners died because of me. I fear we are using them as nothing but expendable pawns.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- Adds thought for animal death due to sacrificer belt -->
	<ThoughtDef ParentName="DeathMemory">
		<defName>KnowAnimalSacrificed</defName>
		<durationDays>10</durationDays>
		<stackLimit>5</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>animal sacrificed</label>
				<description>One of our animals died because of me. They should be treated as more than walking chunks of meat.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>