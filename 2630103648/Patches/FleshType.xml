<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Core</li>
        </mods>
	<match Class="PatchOperationSequence">
		<operations>

		<!-- Tribal Eyepatch -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/FleshTypeDef[defName="Normal"]/hediffWounds</xpath>
					<value>
						<li>
        					<hediff>EPR_TribalEyepatch</hediff>
        					<wounds>
          						<li>
            							<textureSouth>Things/Pawn/Wounds/TribalEyepatch_south</textureSouth>
            							<textureNorth>Things/Pawn/Wounds/TribalEyepatch_south</textureNorth>
            							<textureEast>Things/Pawn/Wounds/TribalEyepatch_east</textureEast>
            							<textureWest>Things/Pawn/Wounds/TribalEyepatch_east</textureWest>
            							<flipWest>true</flipWest>
            							<flipOnWoundAnchorTag>LeftEye</flipOnWoundAnchorTag>
            							<flipOnRotation>South</flipOnRotation>
            							<scale>1.4</scale>
          						</li>
        					</wounds>
						</li>
					</value>
      			</li>

		<!-- Eyepatch -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/FleshTypeDef[defName="Normal"]/hediffWounds</xpath>
					<value>
						<li>
        					<hediff>EPR_Eyepatch</hediff>
        					<wounds>
          						<li>
            							<textureSouth>Things/Pawn/Wounds/Eyepatch_south</textureSouth>
            							<textureNorth>Things/Pawn/Wounds/Eyepatch_south</textureNorth>
            							<textureEast>Things/Pawn/Wounds/Eyepatch_east</textureEast>
            							<textureWest>Things/Pawn/Wounds/Eyepatch_east</textureWest>
            							<flipWest>true</flipWest>
            							<flipOnWoundAnchorTag>LeftEye</flipOnWoundAnchorTag>
            							<flipOnRotation>South</flipOnRotation>
            							<scale>1.4</scale>
          						</li>
        					</wounds>
						</li>
					</value>
      			</li>
		
		<!-- Light Receptor -->
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/FleshTypeDef[defName="Normal"]/hediffWounds</xpath>
					<value>
						<li>
        					<hediff>EPR_LightReceptor</hediff>
        					<wounds>
          						<li>
            							 <textureSouth>Things/Pawn/Wounds/LightReceptor_south</textureSouth>
            							<textureNorth>Things/Pawn/Wounds/LightReceptor_south</textureNorth>
            							<textureEast>Things/Pawn/Wounds/LightReceptor_east</textureEast>
            							<textureWest>Things/Pawn/Wounds/LightReceptor_east</textureWest>
            							<flipWest>true</flipWest>
            							<flipOnWoundAnchorTag>LeftEye</flipOnWoundAnchorTag>
            							<flipOnRotation>South</flipOnRotation>
            							<scale>0.85</scale>
          						</li>
        					</wounds>
						</li>
					</value>
      			</li>
		</operations>
	</match>
</Operation>

</Patch>