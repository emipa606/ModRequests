<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Camouflage and Stealth</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>		
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/comps</xpath>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/comps</xpath>
						<value>
							<li Class="CompCamo.CompProperties_GearCamo">
								<ArcticCamoEff>0.25</ArcticCamoEff>
        						<DesertCamoEff>0.30</DesertCamoEff>
        						<JungleCamoEff>0.40</JungleCamoEff>
        						<StoneCamoEff>0.37</StoneCamoEff>
        						<WoodlandCamoEff>0.40</WoodlandCamoEff>
        						<UrbanCamoEff>0.65</UrbanCamoEff>
								<StealthCamoChance>0</StealthCamoChance>
								<ActiveCamoEff>0.90</ActiveCamoEff>
        						<CamoEnergyMax>1.0</CamoEnergyMax>
        						<CamoEnergyGainPerTick>0.15</CamoEnergyGainPerTick>
							</li>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]</xpath>
						<value>
						<comps>
							<li Class="CompCamo.CompProperties_GearCamo">
								<ArcticCamoEff>0.25</ArcticCamoEff>
        						<DesertCamoEff>0.30</DesertCamoEff>
        						<JungleCamoEff>0.40</JungleCamoEff>
        						<StoneCamoEff>0.37</StoneCamoEff>
        						<WoodlandCamoEff>0.40</WoodlandCamoEff>
        						<UrbanCamoEff>0.65</UrbanCamoEff>
								<StealthCamoChance>0</StealthCamoChance>
								<ActiveCamoEff>0.90</ActiveCamoEff>
        						<CamoEnergyMax>1.0</CamoEnergyMax>
        						<CamoEnergyGainPerTick>0.15</CamoEnergyGainPerTick>
							</li>
						</comps>
						</value>
					</nomatch>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/thingClass</xpath>
					<match Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/thingClass</xpath>
						<value>
							<thingClass Inherit="false">CompCamo.ActiveCamoApparel</thingClass>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]</xpath>
						<value>
							<thingClass Inherit="false">CompCamo.ActiveCamoApparel</thingClass>
						</value>
					</nomatch>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/tickerType</xpath>
					<match Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/tickerType</xpath>
						<value>
							<tickerType Inherit="false">Normal</tickerType>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]</xpath>
						<value>
							<tickerType Inherit="false">Normal</tickerType>
						</value>
					</nomatch>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Camouflage and Stealth</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/comps</xpath>
					<match Class="PatchOperationSequence">
						<operations>
						<li Class="PatchOperationTest">
							<success>Invert</success>
							<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/comps/li[@Class="Observer.CompProperties_Observer"]</xpath>
						</li>
						<li Class="PatchOperationAdd">	
							<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]/comps</xpath>
							<value>
								<li Class="Observer.CompProperties_Observer">
									<SightOffset>+0.50</SightOffset>
								</li>
							</value>
						</li>
						</operations>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV"]</xpath>
						<value>
							<comps>
								<li Class="Observer.CompProperties_Observer">
									<SightOffset>+0.50</SightOffset>
								</li>
							</comps>
						</value>
					</nomatch>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RNApparel_ChickenHatMGSV" or defName="Apparel_PowerArmorGhostGear"]/apparel/tags</xpath>
					<value>
						<li>PassiveCamo_Urban_High</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>