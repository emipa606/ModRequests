<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="SculptureBase">
      <defName>StatueSmall</defName>
      <label>small statue</label>
      <description>A torso-sized piece of material sculpted into an artistic form.</description>
      <graphicData>
        <graphicClass>Graphic_Random</graphicClass>
        <texPath>Things/Building/Art/SculptureSmall</texPath>
      </graphicData>
      <fillPercent>0.35</fillPercent>
      <rotatable>false</rotatable>
      <statBases>
        <MaxHitPoints>90</MaxHitPoints>
        <Mass>3</Mass>
        <Beauty>50</Beauty>
        <WorkToMake>19800</WorkToMake>
        <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
      </statBases>
      <stuffCategories>
        <li>Chunky</li>
      </stuffCategories>
    <costStuffCount>1</costStuffCount>
    </ThingDef>


  <ThingDef ParentName="SculptureBase">
    <defName>StatueLarge</defName>
    <label>large statue</label>
    <description>A person-sized piece of material sculpted into an artistic form.</description>
    <castEdgeShadows>true</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureLarge</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>7</Mass>
      <Beauty>100</Beauty>
      <WorkToMake>33000</WorkToMake>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">20</StyleDominance>
    </statBases>
    <stuffCategories>
      <li>Chunky</li>
    </stuffCategories>
    <costStuffCount>2</costStuffCount>
  </ThingDef>

<ThingDef ParentName="SculptureBase">
    <defName>StatueGrand</defName>
    <label>grand statue</label>
    <description>A huge sculpture sized to dominate a room.</description>
    <castEdgeShadows>true</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureGrand</texPath>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <size>(2,2)</size>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Beauty>400</Beauty>
      <Mass>28</Mass>
      <WorkToMake>115500</WorkToMake>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">40</StyleDominance>
    </statBases>
    <stuffCategories>
      <li>Chunky</li>
    </stuffCategories>
    <costStuffCount>8</costStuffCount>
  </ThingDef>
  
  <ThingDef ParentName="SculptureBase" MayRequire="Ludeon.RimWorld.Ideology">
    <defName>StatueTerror</defName>
    <label>terror statue</label>
    <description>A person-sized piece of material sculpted into a threatening form. Slaves who spend time around it will feel terror, which makes them stay suppressed for longer and thus reduces slave rebellions.</description>
    <castEdgeShadows>true</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureTerror</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>7</Mass>
      <Beauty>-5</Beauty>
      <WorkToMake>33000</WorkToMake>
      <TerrorSource MayRequire="Ludeon.RimWorld.Ideology">0</TerrorSource>
    </statBases>
    <stuffCategories>
      <li>Chunky</li>
    </stuffCategories>
    <costStuffCount>2</costStuffCount>
  </ThingDef>

</Defs>
