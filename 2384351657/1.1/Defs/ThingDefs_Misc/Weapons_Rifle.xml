<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ==================MK1============================ -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_MoritaRifleBullet</defName>
    <label>morita bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>6</damageAmountBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="SSTHDBaseHumanMakeableGun">
    <defName>SSTHD_MoritaMK1Gun</defName>
    <label>SSTHD Morita Mk1</label>
    <description>The standard rifle for the Federation. It's a fully automatic bullpup rifle chambered in .308 with an under barrel shotgun attached; a favorite within the Federation and standard-issue for the Mobile Infantry. Kill bugs!</description>
    <graphicData>
      <texPath>Things/Item/Equipment/ssthd_morita</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
    </recipeMaker>
    <statBases>
      <WorkToMake>44000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.68</AccuracyTouch>
      <AccuracyShort>0.84</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.61</AccuracyLong>
      <RangedWeapon_Cooldown>1.30</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>55</Steel>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MoritaRifleBullet</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>35</range>
        <burstShotCount>8</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>SSTHD_Morita_308_Shot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SSTHDEliteGun</li>
      <li>SSTHD_MoritaMK1</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="SYS.CompProperties_Sheath">
        <sheathOnlyGraphicData>
        <texPath>Things/Item/Equipment/ssthd_morita_Sheath</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
      </sheathOnlyGraphicData>
      <fullGraphicData>
        <texPath>Things/Item/Equipment/ssthd_morita_Full</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        </fullGraphicData>
        <drawPosition>Back</drawPosition>
          <northOffset>
            <position>(0,0.05,-0.15)</position>
            <angle>10</angle>
          </northOffset>
          <southOffset>
            <position>(0,0,-0.15)</position>
            <angle>-5</angle>
          </southOffset>
            <eastOffset>
          <position>(0,0,-0.1)</position>
            <angle>0</angle>
          </eastOffset>
          <westOffset>
            <position>(0,0,-0.1)</position>
            <angle>0</angle>
          </westOffset>
      </li>
    </comps>
  </ThingDef>
