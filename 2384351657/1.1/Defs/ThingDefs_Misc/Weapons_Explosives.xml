<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ======================= SST Launcher ======================= -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SSTHDM55Rocket</defName>
    <label>M55 Rocket</label>
    <graphicData>
      <texPath>Things/Projectile/ssthd_rocket</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>40</damageAmountBase>
      <explosionRadius>2</explosionRadius>
      <speed>50</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="SSTHDBaseHumanMakeableGun">
    <defName>SSTHDM55RocketLauncher</defName>
    <label>SSTHD M55 Rocket Launcher</label>
    <description>This Portable launcher was ideal for Mobile Infantry units who were engaging with arachnid threats, their entire purpose was to fire Tactical Oxygen Nukes at targets and vaporize anything near the blast. Not something you want pointed at you, unless you're a bug.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/ssthd_rocketlauncher</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1600</MarketValue>
      <WorkToMake>75000</WorkToMake>
      <Mass>5</Mass>
      <AccuracyTouch>0.6</AccuracyTouch>
      <AccuracyShort>0.8</AccuracyShort>
      <AccuracyMedium>0.92</AccuracyMedium>
      <AccuracyLong>0.88</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>MultibarrelWeapons</researchPrerequisite>
    </recipeMaker>
    <costList>
      <Steel>190</Steel>
    </costList>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>SSTHD_RPG</li>
    </weaponTags>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SSTHDM55Rocket</defaultProjectile>
        <forcedMissRadius>1.0</forcedMissRadius>
        <ai_AvoidFriendlyFireRadius>2</ai_AvoidFriendlyFireRadius>
        <warmupTime>2</warmupTime>
        <range>40</range>
        <soundCast>SSTHD_Rocket_Shot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>false</onlyManualCast>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="SYS.CompProperties_Sheath">
        <sheathOnlyGraphicData>
        <texPath>Things/Item/Equipment/ssthd_rocketlauncher_Sheath</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
      </sheathOnlyGraphicData>
      <fullGraphicData>
        <texPath>Things/Item/Equipment/ssthd_rocketlauncher_Full</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        </fullGraphicData>
        <drawPosition>Back</drawPosition>
          <northOffset>
            <position>(0,0.05,-0.15)</position>
            <angle>10</angle>
          </northOffset>
          <southOffset>
            <position>(0,0,-0.15)</position>
            <angle>-5</angle>
          </southOffset>
            <eastOffset>
          <position>(0,0,-0.1)</position>
            <angle>0</angle>
          </eastOffset>
          <westOffset>
            <position>(0,0,-0.1)</position>
            <angle>0</angle>
          </westOffset>
      </li>
    </comps>
  </ThingDef>
</Defs>