<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ============================================================== -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SSTHDShotgun</defName>
    <label>shotgun blast</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="SSTHDBaseHumanMakeableGun">
    <defName>SSTHDMoritaM34Shotgun</defName>
    <label>SSTHD Morita M34 Shotgun</label>
    <description>A shotgun used rarely within the Mobile Infantry; it's sturdy design and rugged feel allow it's user to maintain control whilst rapidly firing off shotgun shells.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/ssthd_morita_shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <weaponTags>
      <li>SSTHDGun</li>
      <li>SSTHD_MoritaM34Shotgun</li>
    </weaponTags>
    <soundInteract>Interact_Shotgun</soundInteract>
    <generateCommonality>0.3</generateCommonality>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
    </recipeMaker>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>4.5</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.05</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SSTHDShotgun</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>25</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>SSTHD_Morita_Shotgun_Shot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="SYS.CompProperties_Sheath">
        <sheathOnlyGraphicData>
        <texPath>Things/Item/Equipment/ssthd_morita_shotgun_Sheath</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
      </sheathOnlyGraphicData>
      <fullGraphicData>
        <texPath>Things/Item/Equipment/ssthd_morita_shotgun_Full</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        </fullGraphicData>
        <drawPosition>Back</drawPosition>
          <northOffset>
            <position>(0,0.05,-0.15)</position>
            <angle>10</angle>
          </northOffset>
          <southOffset>
            <position>(0,0,-0.15)</position>
            <angle>-5</angle>
          </southOffset>
            <eastOffset>
          <position>(0,0,-0.1)</position>
            <angle>0</angle>
          </eastOffset>
          <westOffset>
            <position>(0,0,-0.1)</position>
            <angle>0</angle>
          </westOffset>
      </li>
    </comps>
  </ThingDef>
</Defs>