      <!--=================================== RIFLE WEAPONS ========================================-->
      <!--=============== MK1 ====================-->
      <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
        <defName>SSTHD_MoritaMK1Gun</defName>
        <statBases>
          <WorkToMake>44000</WorkToMake>
          <Bulk>6.55</Bulk>
          <Mass>3.5</Mass>
          <SwayFactor>1.25</SwayFactor>
          <ShotSpread>0.08</ShotSpread>
          <SightsEfficiency>2.24</SightsEfficiency>
          <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
        </statBases>
        <costList>
          <Steel>60</Steel>
          <ComponentIndustrial>8</ComponentIndustrial>
        </costList>
        <Properties>
          <verbClass>CombatExtended.Verb_ShootCE</verbClass>
          <hasStandardCommand>true</hasStandardCommand>
          <defaultProjectile>Bullet_556x45mmNATO_FMJ</defaultProjectile>
          <warmupTime>0.9</warmupTime>
          <range>55</range>
          <burstShotCount>15</burstShotCount>
          <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
          <recoilAmount>1.44</recoilAmount>
          <recoilPattern>Regular</recoilPattern>
          <soundCast>SSTHD_Morita_308_Shot</soundCast>
          <soundCastTail>GunTail_Medium</soundCastTail>
          <muzzleFlashScale>9</muzzleFlashScale>
        </Properties>
        <AmmoUser>
          <magazineSize>40</magazineSize>
          <reloadTime>2.0</reloadTime>
          <ammoSet>AmmoSet_556x45mmNATO</ammoSet>
        </AmmoUser>
        <FireModes>
          <aiAimMode>SuppressFire</aiAimMode>
          <aimedBurstShotCount>10</aimedBurstShotCount>
        </FireModes>
        <weaponTags />
        <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="SSTHD_MoritaMK1Gun" or defName="SSTHD_MoritaMK1ScopedGun" or defName="SSTHD_MoritaMK1CarbineGun" or defName="SSTHD_MoritaMK3Gun"]/tools</xpath>
        <value>
          <tools>
            <li Class="CombatExtended.ToolCE">
              <label>stock</label>
              <capacities>
                <li>Blunt</li>
              </capacities>
              <power>8</power>
              <cooldownTime>1.55</cooldownTime>
              <chanceFactor>1.5</chanceFactor>
              <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
              <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
              <label>barrel</label>
              <capacities>
                <li>Blunt</li>
              </capacities>
              <power>5</power>
              <cooldownTime>2.02</cooldownTime>
              <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
              <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
              <label>muzzle</label>
              <capacities>
                <li>Poke</li>
              </capacities>
              <power>8</power>
              <cooldownTime>1.55</cooldownTime>
              <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
              <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
            </li>
          </tools>
        </value>
      </li>
