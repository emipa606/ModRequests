<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ============================================================== -->
  <ThingDef ParentName="SSTHDBaseMeleeWeapon">
    <defName>MeleeWeapon_SSTHDCombatKnife</defName>
    <label>SSTHD Combat knife</label>
    <techLevel>Neolithic</techLevel>
    <description>The combat knife is standard for all Mobile Infantrymen within the Federation, no man or woman should be found with ought it. After all, the enemy cannot push a button if you disable its hand.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/ssthd_knife</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <weaponTags>
      <li>SSTHDOnlyMelee</li>
    </weaponTags>
    <costStuffCount>40</costStuffCount>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <Mass>0.5</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>10.7</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  <!-- ============================================================== -->
  <ThingDef ParentName="SSTHDBaseMeleeWeapon">
    <defName>MeleeWeapon_SSTSpade</defName>
    <label>SSTHD Spade</label>
    <description>A standard issue spade that was given to Mobile Infantrymen when they needed to dig holes, or cover up bug tunnels manually. These were not carried on the persons of Mobile Infantrymen, rather kept in the rear echelon of bases to be handed out.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/ssthd_spade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <weaponTags>
      <li>SSTHDOnlyMelee</li>
    </weaponTags>
    <costStuffCount>40</costStuffCount>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.15</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14.2</power>
        <cooldownTime>2.15</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>