<Defs>
    <!-- General Job Satisfaction Thoughts -->
    <ThoughtDef>
        <defName>JobSatisfaction_Small</defName>
        <label>tiny spark of satisfaction</label>
        <durationDays>0.7</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>tiny spark of satisfaction</label>
                <description>I felt a small but pleasant spark of satisfaction after i did some work.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_Medium</defName>
        <label>pleasant sense of achievement</label>
        <durationDays>0.9</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>pleasant sense of achievement</label>
                <description>A satisfying sense of accomplishment washed over me after completing some good amount of work.</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_Large</defName>
        <label>deep sense of fulfillment</label>
        <durationDays>1.5</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>deep sense of fulfillment</label>
                <description>I felt a profound sense of fulfillment after a lot of work done, filling my soul with pride.</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_Huge</defName>
        <label>overwhelming joy of accomplishment</label>
        <durationDays>2</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>overwhelming joy of accomplishment</label>
                <description>I am brimming with joy and pride after achieving a significant goal, and the feeling lingers.</description>
                <baseMoodEffect>15</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Lazy Pawns' Job Satisfaction Thoughts -->
    <ThoughtDef>
        <defName>JobSatisfaction_Lazy_Small</defName>
        <label>small sense of satisfaction (Lazy)</label>
        <durationDays>0.7</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>small sense of satisfaction (Lazy)</label>
                <description>I feel a minor sense of accomplishment after managing to do a bit of work.</description>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_Lazy_Medium</defName>
        <label>moderate sense of satisfaction (Lazy)</label>
        <durationDays>0.9</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>moderate sense of satisfaction (Lazy)</label>
                <description>Even a moderate amount of work brings me a decent sense of satisfaction, though I still prefer taking it easy.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_Lazy_Large</defName>
        <label>significant sense of satisfaction (Lazy)</label>
        <durationDays>1.5</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>significant sense of satisfaction (Lazy)</label>
                <description>I experience a notable feeling of satisfaction after doing a considerable amount of work, even if I'd rather not have.</description>
                <baseMoodEffect>6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_Lazy_Huge</defName>
        <label>great sense of satisfaction (Lazy)</label>
        <durationDays>2</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>great sense of satisfaction (Lazy)</label>
                <description>Despite a strong aversion to labor, I feel a substantial sense of satisfaction after an unusually large amount of work.</description>
                <baseMoodEffect>9</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Hard Worker Thoughts -->
    <ThoughtDef>
        <defName>JobSatisfaction_HardWorker_Small</defName>
        <label>small sense of satisfaction (Hard Worker)</label>
        <durationDays>0.7</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>small sense of satisfaction (Hard Worker)</label>
                <description>I take pleasure in even the smallest of accomplishments, feeling a bit of satisfaction from completing tasks efficiently.</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_HardWorker_Medium</defName>
        <label>moderate sense of satisfaction (Hard Worker)</label>
        <durationDays>0.9</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>moderate sense of satisfaction (Hard Worker)</label>
                <description>A solid sense of achievement fills me after a productive work session, and I feel well-rewarded for my efforts.</description>
                <baseMoodEffect>8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_HardWorker_Large</defName>
        <label>significant sense of satisfaction (Hard Worker)</label>
        <durationDays>1.5</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>significant sense of satisfaction (Hard Worker)</label>
                <description>I feel a deep sense of accomplishment after a substantial amount of work, taking great pride in my achievements.</description>
                <baseMoodEffect>12</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>JobSatisfaction_HardWorker_Huge</defName>
        <label>great sense of satisfaction (Hard Worker)</label>
        <durationDays>2</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>great sense of satisfaction (Hard Worker)</label>
                <description>After an extraordinary amount of work, I am overwhelmed with joy and pride, savoring the fruits of my labor.</description>
                <baseMoodEffect>18</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- 
	Thought -->
    <ThoughtDef>
        <defName>JobSatisfaction_Burnout</defName>
        <label>burnout</label>
        <durationDays>2</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stages>
            <li>
                <label>burnout</label>
                <description>I worked so hard that I burned myself out. I feel like a well-done steak: crispy on the outside, charred on the inside.</description>
                <baseMoodEffect>-10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>
