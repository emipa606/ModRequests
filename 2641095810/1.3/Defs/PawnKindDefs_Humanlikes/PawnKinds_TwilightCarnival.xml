<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <PawnKindDef Name="Lavas_MedievalPawnKindBase" Abstract="True">
    <race>Human</race>
    <defaultFactionType>Lavas_TwilightCivil</defaultFactionType>
    <backstoryCategories>
      <li>Tribal</li>
    </backstoryCategories>
    <maxGenerationAge>45</maxGenerationAge>
    <chemicalAddictionChance>0.50</chemicalAddictionChance>
    <invNutrition>2.55</invNutrition>
    <invFoodDef>Chocolate</invFoodDef>
    <apparelTags>
      <li>Lavas_MidnightMerchants</li>
    </apparelTags>
  </PawnKindDef>

  <PawnKindDef ParentName="Lavas_MedievalPawnKindBase">
    <defName>Lavas_Medieval_Harlequin</defName>
    <label>harlequin</label>
    <combatPower>35</combatPower>
    <chemicalAddictionChance>0.50</chemicalAddictionChance>
    <invNutrition>0</invNutrition>
    <itemQuality>Poor</itemQuality>
    <isFighter>false</isFighter>
    <gearHealthRange>
      <min>0.2</min>
      <max>1.1</max>
    </gearHealthRange>
    <apparelMoney>200~400</apparelMoney>
    <apparelTags>
      <li>Lavas_Harlequin</li>
    </apparelTags>
    <weaponMoney>100~250</weaponMoney>
    <weaponTags>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Bludgeon</li>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Pitchfork</li>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_HookedBlade</li>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Pickaxe</li>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Hatchet</li>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_WoodcuttersAxe</li>
    </weaponTags>
    <techHediffsMoney>
      <min>50</min>
      <max>50</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <techHediffsChance>0.15</techHediffsChance>
    <initialWillRange>1~2</initialWillRange>
    <initialResistanceRange>3~8</initialResistanceRange>
  </PawnKindDef>

  <!-- Low-tier - merchant, squire -->
  <PawnKindDef ParentName="Lavas_MedievalPawnKindBase">
    <defName>Lavas_Medieval_TwilightMerchant</defName>
    <label>twilight merchant</label>
    <fixedGender>Female</fixedGender>
    <combatPower>40</combatPower>
    <trader>true</trader>
    <isFighter>false</isFighter>
    <gearHealthRange>
      <min>1</min>
      <max>1</max>
    </gearHealthRange>
    <apparelMoney>400~600</apparelMoney>
    <apparelTags>
      <li>Lavas_MidnightMerchants</li>
    </apparelTags>
    <weaponMoney>250~400</weaponMoney>
    <weaponTags>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Bludgeon</li>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Hatchet</li>
      <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Falchion</li>
    </weaponTags>
    <modExtensions Inherit="False"/>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>5~9</initialResistanceRange>
  </PawnKindDef>

