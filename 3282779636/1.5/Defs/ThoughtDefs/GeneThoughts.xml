<?xml version="1.0" encoding="utf-8"?>

<Defs>

	<ThoughtDef Name="VAGUE_androidMoodThoughtBase" Abstract="True">
		<workerClass>ThoughtWorker_AlwaysActive</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
	</ThoughtDef>
	
	<ThoughtDef ParentName="VAGUE_androidMoodThoughtBase">
		<defName>VAGUE_androidMoodMaxizer</defName>
		<requiredGenes>
			<li>VAGUE_joyOverride</li>
		</requiredGenes>
		<stages>
			<li>
				<label>joy override</label>
				<description>My curcuits are in a permanant state of euphoria, and yet I feel none of it.</description>
				<baseMoodEffect>1000</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef ParentName="VAGUE_androidMoodThoughtBase">
		<defName>VAGUE_androidSmallMoodBoost</defName>
		<requiredGenes>
			<li>VAGUE_smallMoodBoost</li>
		</requiredGenes>
		<stages>
			<li>
				<label>optimistic programming</label>
				<description>My programming lets me find joy in even the littlest of things, I love it!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef ParentName="VAGUE_androidMoodThoughtBase">
		<defName>VAGUE_androidLargeMoodBoost</defName>
		<requiredGenes>
			<li>VAGUE_largeMoodBoost</li>
		</requiredGenes>
		<stages>
			<li>
				<label>sanguine programming</label>
				<description>I am practically incapable of feeling bad, life is a dream.</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef ParentName="VAGUE_androidMoodThoughtBase">
		<defName>VAGUE_androidLargeMoodDecrease</defName>
		<requiredGenes>
			<li>VAGUE_largeMoodDecrease</li>
		</requiredGenes>
		<stages>
			<li>
				<label>broken joy subroutines</label>
				<description>I feel no joy, only anger.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef ParentName="VAGUE_androidMoodThoughtBase">
		<defName>VAGUE_androidSmallMoodDecrease</defName>
		<requiredGenes>
			<li>VAGUE_smallMoodDecrease</li>
		</requiredGenes>
		<stages>
			<li>
				<label>pessimistic programming</label>
				<description>The worlds colors are dimmed, it's tough to enjoy life.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>