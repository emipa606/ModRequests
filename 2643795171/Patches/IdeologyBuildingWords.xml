<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
		
		<!-- ideo buildings -->
		
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RulePackDef[defName="NamerAltar"]/rulePack/rulesStrings</xpath>
				<value>
					<li>buildingName->tabernacle</li>
					<li>buildingName->sanctum</li>
				</value>
			</li>
		
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RulePackDef[defName="NamerIdeoSculpture"]/rulePack/rulesStrings</xpath>
				<value>
					<li>buildingName->model</li>
					<li>buildingName->depiction</li>
					<li>buildingName->portrayal</li>
					<li>buildingName->face</li>
					<li>buildingName->countenance</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RulePackDef[defName="NamerIdeogram"]/rulePack/rulesStrings</xpath>
				<value>
					<li>buildingName->depiction</li>
					<li>buildingName->essence</li>
					<li>buildingName->sign</li>
					<li>buildingName->rune</li>
					<li>buildingName->seal</li>
					<li>buildingName->motif</li>
					<li>buildingName->insignia</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RulePackDef[defName="NamerSmoker"]/rulePack/rulesStrings</xpath>
				<value>
					<li>buildingName->bubbler</li>
					<li>buildingName->vaporizer</li>
					<li>buildingName->burner</li>
					<li>buildingName->emitter</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RulePackDef[defName="NamerCannibalPlatter"]/rulePack/rulesStrings</xpath>
				<value>
					<li>buildingName->buffet</li>
				</value>
			</li>
			
		</operations>
	</Operation>

</Patch>