		<possessionCount>1</possessionCount>
		<graphicData>
			<texPath>Things/Item/TrekTech_FasterCaravan/TrekTech_HikingBoots</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<soundInteract>Wood_Drop</soundInteract>
		<soundDrop>Wood_Drop</soundDrop>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<WorkToMake>2000</WorkToMake>
			<MarketValue>200</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.1</Mass>
			<Flammability>0.2</Flammability>
		</statBases>
		<thingCategories>
			<li>TrekTech_CaravanGear</li>
		</thingCategories>
		<drawGUIOverlay>false</drawGUIOverlay>
		<tradeability>Sellable</tradeability>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<researchPrerequisite>TrekTech_HikingGear</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<displayPriority>210</displayPriority>
		</recipeMaker>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<costList>
			<Plasteel>30</Plasteel>
		</costList>
		<tradeTags>
			<li>TrekTech</li>
		</tradeTags>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.4,0.3,0.15)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>(0.6,0.45,0.18)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>(0.8,0.6,0.23)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>



