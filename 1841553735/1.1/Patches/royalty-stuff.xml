<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Royalty</li>
    </mods>
    <match Class="PatchOperationAdd">
        <xpath>/Defs/ThingSetMakerDef[defName="MapGen_DefaultStockpile3"]/root[@Class="ThingSetMaker_RandomOption"]/options</xpath>
        <value> 

			<li>
		    <weight>0.5</weight>
			  <thingSetMaker Class="ThingSetMaker_Count">
				<fixedParams>
				  <filter>
						<thingDefs>
							<li>Apparel_ArmorCataphract</li> 
							<li>Apparel_ArmorHelmetCataphract</li> 
<li>Apparel_PsyfocusHelmet</li>
<li>Apparel_PsyfocusShirt</li>
	<li>Apparel_PsyfocusVest</li>	
<li>Apparel_PsyfocusRobe</li>	
<li>MeleeWeapon_PsyfocusStaff</li>
						</thingDefs>
				  </filter>
				  <countRange>2~8</countRange>
				</fixedParams>
			  </thingSetMaker>
			</li>

		</value>
		</match>
	
	</Operation>
	
</Patch>