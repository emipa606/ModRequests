<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="PlantBase">
    <defName>RN_PlantGodHearth</defName>
    <label>God's Hearth</label>
    <description>A synthetic plant with very complicated DNA. Grows long, but has a beautiful golden flower.</description>
    <statBases>
      <MaxHitPoints>165</MaxHitPoints>
      <Beauty>75</Beauty>
	  <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Flowers/GodHearth</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible />
    <plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>			
			<harvestTag>Standard</harvestTag>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Decorative</li>
			</sowTags>
			<growMinGlow>0.3</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>4.0</growDays>			
			<lifespanDaysPerGrowDays>8</lifespanDaysPerGrowDays>
			<sowResearchPrerequisites>
              <li>RN_flowers</li>
            </sowResearchPrerequisites>
			<visualSizeRange>0.3~1.3</visualSizeRange>
    </plant>
	</ThingDef>
	
