<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="TreeBase">
    <defName>RN_PlantMahogany</defName>
    <label>Mahogany tree</label>
    <description>A high tree with beautiful wood. Grows long and yield a lot of wood.</description>
    <graphicData>
      <texPath>Things/Tree/Mahogany</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <shadowData>
        <volume>(0.15, 0.3, 0.1)</volume>
      </shadowData>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
	  <Nutrition>1.35</Nutrition>
    </statBases>    
    <plant>
	  <growDays>19.50</growDays>
	  <harvestWork>700</harvestWork>
      <harvestYield>50</harvestYield>
	  <visualSizeRange>2.0~2.9</visualSizeRange>
	  <sowResearchPrerequisites>
        <li>RN_trees</li>
      </sowResearchPrerequisites>
	  <wildBiomes>
	   <TropicalRainforest>0.08</TropicalRainforest>
	  </wildBiomes>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="TreeBase">
    <defName>RN_PlantStick</defName>
    <label>Stick tree</label>
    <description>A very weak tree with useless wood. Grows fast, but yield is very little.</description>
    <graphicData>
      <texPath>Things/Tree/StickTree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <shadowData>
        <volume>(0.15, 0.3, 0.1)</volume>
      </shadowData>
    </graphicData>
	<statBases>      
	  <Nutrition>0.95</Nutrition>
    </statBases>    
    <plant>
	  <growDays>9.5</growDays>
      <harvestWork>450</harvestWork>
	  <leaflessGraphicPath>Things/Tree/Leafless/StickTree</leaflessGraphicPath>
      <harvestYield>12</harvestYield>
	  <visualSizeRange>1.8~2.0</visualSizeRange>
	  <sowResearchPrerequisites>
        <li>RN_trees</li>
      </sowResearchPrerequisites>
	  <wildBiomes>
	   <TemperateForest>0.09</TemperateForest>
	  </wildBiomes>
    </plant>
  </ThingDef>
  
