  </ThingDef>
  
  <ThingDef ParentName="TreeBase">
    <defName>RN_PlantBaobab</defName>
    <label>Baobab tree</label>
    <description>A big tree with hard wood. Grows very long, because it gather water for hotter days.</description>
    <graphicData>
      <texPath>Things/Tree/Baobab</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <shadowData>
        <volume>(0.15, 0.3, 0.1)</volume>
      </shadowData>
    </graphicData>
	<statBases>
