<Defs>
  
  <ThingDef ParentName="PlantBase">
    <defName>RN_PlantPeony</defName>
    <label>Peony</label>
    <description>A very beautiful, huge flower.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Beauty>30</Beauty>
	  <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Flowers/Peony</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible />
	<plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>			
			<harvestTag>Standard</harvestTag>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Decorative</li>
				<li>Ground</li>
			</sowTags>
			<growMinGlow>0.3</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>2.0</growDays>
			<lifespanDaysPerGrowDays>8</lifespanDaysPerGrowDays>
			<visualSizeRange>0.3~1.05</visualSizeRange>
    </plant>
  </ThingDef>
	
