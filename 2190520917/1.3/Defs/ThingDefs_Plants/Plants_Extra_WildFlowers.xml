<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="PlantBase">
    <defName>RN_PlantDaisy</defName>
    <label> Daisy</label>
    <description>A common small flower. Grows in small groups and it is pleasant to look at.</description>
    <statBases>
      <MaxHitPoints>35</MaxHitPoints>
      <Beauty>4</Beauty>
	  <Nutrition>0.18</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Flowers/Daisy</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>    
    <plant>
	  <fertilitySensitivity>0.0</fertilitySensitivity>
	  <growDays>2.0</growDays>
	  <sowTags>
		<li>Ground</li>
      </sowTags>
	  <fertilityMin>0.05</fertilityMin>
	  <maxMeshCount>16</maxMeshCount>
	  <visualSizeRange>0.3~0.4</visualSizeRange>
	  <wildBiomes>
	     <TemperateForest>0.2</TemperateForest>
	     <TropicalRainforest>0.1</TropicalRainforest>
	     <BorealForest>0.05</BorealForest>
	  </wildBiomes>
      <topWindExposure>0.3</topWindExposure>
      <wildOrder>1</wildOrder>
      <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
      <wildClusterWeight>4</wildClusterWeight>
      <wildClusterRadius>4</wildClusterRadius>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>RN_PlantFlameEye</defName>
    <label>Flame Eye</label>
    <description>Very rare plant that grows only in tropical climate. It has a very beautiful flowers, but it can't be harvested nor planted, because when you try to cut it  or gather seeds - it dies immediately. Even Glitterworld science doesn't explain it.</description>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <Beauty>200</Beauty>
	  <Nutrition>0.10</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Flowers/Flame Eye</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>    
    <plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>			
			<harvestTag>Standard</harvestTag>
			<sowWork>750</sowWork>
			<growMinGlow>0.3</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>3.5</growDays>
			<lifespanDaysPerGrowDays>8</lifespanDaysPerGrowDays>
			<visualSizeRange>0.6~1.45</visualSizeRange>
	   <maxMeshCount>4</maxMeshCount>
	  <wildBiomes>
	  <TemperateForest>0.0</TemperateForest>
	   <TropicalRainforest>0.04</TropicalRainforest>
	   <BorealForest>0.0</BorealForest>
	   </wildBiomes>
    </plant>
  </ThingDef>
	
  
	<ThingDef ParentName="PlantBase">
    <defName>RN_PlantClover</defName>
    <label>Clover</label>
    <description>A common plant, grows almost everywhere. High nutrition for animals.</description>
    <statBases>
      <MaxHitPoints>35</MaxHitPoints>
      <Beauty>1</Beauty>
	  <Nutrition>0.30</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Flowers/Clover</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.3</hideAtSnowDepth>    
    <plant>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>2.6</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>25</maxMeshCount>
			<visualSizeRange>0.3~0.4</visualSizeRange>
	  <wildBiomes>
	   <TemperateForest>0.25</TemperateForest>
	   <TropicalRainforest>0.25</TropicalRainforest>    			   
	   <BorealForest>0.15</BorealForest>
	</wildBiomes>
      <topWindExposure>0.3</topWindExposure>
      <wildOrder>1</wildOrder>
      <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
      <wildClusterWeight>5</wildClusterWeight>
      <wildClusterRadius>5</wildClusterRadius>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>RN_PlantRoundCactus</defName>
    <label>Round Cactus</label>
    <description>A plant that grows in hot and dry climates. Has a beautiful flower.</description>
    <statBases>
      <MaxHitPoints>185</MaxHitPoints>
      <Beauty>12</Beauty>
	  <Nutrition>0.25</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Flowers/Round Cactus</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>    
    <plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>			
			<harvestTag>Standard</harvestTag>
			<sowWork>600</sowWork>
			<sowTags>
				<li>Decorative</li>
				<li>Ground</li>
