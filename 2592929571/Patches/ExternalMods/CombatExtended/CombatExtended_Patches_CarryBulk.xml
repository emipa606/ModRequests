<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
	
		<mods>
			<li>Combat Extended</li>
		</mods>
		
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- Carry Bulk -->
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/ThingDef[defName="SNS_Apparel_FirstCycleHelmet"]/equippedStatOffsets</xpath>
					<value>
						<CarryBulk>1000000</CarryBulk>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/ThingDef[defName="SNS_Apparel_FirstCycleArmor"]/equippedStatOffsets</xpath>
					<value>
						<CarryBulk>1000000</CarryBulk>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/HediffDef[defName="SNS_Hediff_BionicSpine_GenIV"]/StatOffsets</xpath>
					<value>
						<CarryBulk>1000000</CarryBulk>
					</value>
				</li>
				
			</operations>
		</match>
		
	</Operation>

</Patch>