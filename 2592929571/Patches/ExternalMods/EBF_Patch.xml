<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Elite Bionics Framework</li>
    </mods>
	<match Class="PatchOperationSequence">
		<operations>

			<li Class="PatchOperationReplace">
			<xpath>/Defs/HediffDef[defName="SNS_Base_BionicHediff_GenIV"]/comps/li[1]</xpath>
				<value>
					<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
                        <scaleAdjustment>199</scaleAdjustment>
                    </li>
				</value>
			</li>

			<li Class="PatchOperationReplace">
			<xpath>/Defs/HediffDef[defName="SNS_Base_BionicHediffImplant_GenIV"]/comps/li[1]</xpath>
				<value>
					<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
                        <scaleAdjustment>199</scaleAdjustment>
                    </li>
				</value>
			</li>
			
		</operations>
	</match> 
</Operation>

</Patch>