<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="ApparelBase">
    <defName>SNS_CE_TemporalBarrierProjector</defName>
    <label>Temporal Barrier Projector</label>
    <description>A picoscale-sized device that projects an invisible temporal barrier, much like the one that the Cycle Alpha Armor uses. Prevents wounds from being inflicted at all by altering time locally around the user with Eternium and Stable Matter, allowing them to ignore attacks. Additionally, brain controlled manipulation of the temporal field allows for rapid movement in zero gravity environments, such as space. While this is technically less protective than the Cycle Alpha armor, nothing's ever really going to get through this anyway...</description>
	<techLevel>Archotech</techLevel>
	<useHitPoints>false</useHitPoints>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TemporalBarrier/TemporalBarrier</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <MaxHitPoints>99999</MaxHitPoints>
	  <MarketValue>50000000</MarketValue> <!-- value so high to ensure nobody spawns with it -->
	  <DeteriorationRate>0.0</DeteriorationRate>
      <Mass>0.001</Mass>
      <Flammability>0.0</Flammability>
      <ArmorRating_Sharp>10000</ArmorRating_Sharp>
      <ArmorRating_Blunt>10000</ArmorRating_Blunt>
      <ArmorRating_Heat>10000</ArmorRating_Heat>
      <Insulation_Cold>10000</Insulation_Cold>
      <Insulation_Heat>10000</Insulation_Heat>
      <EquipDelay>0</EquipDelay>
	  
      <EnergyShieldRechargeRate>100</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>15000</EnergyShieldEnergyMax>
    </statBases>
	<comps>
      <li Class="CompProperties_Shield">
        <compClass>Armorshield.CompShieldRanged</compClass>
      </li>
    </comps>
    <equippedStatOffsets>
      <MoveSpeed>20</MoveSpeed> <!-- You can run, you can run, but I'll always catch up. -->
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    <costList>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TemporalBarrier/TemporalBarrier</wornGraphicPath>
      <layers>
        <li>EyeCover</li>
      </layers>
	  <tags>
		<li>EVA</li>
	    <li>PrestigeCombatGear</li>
	  </tags>
      <useDeflectMetalEffect>false</useDeflectMetalEffect>
	  <careIfWornByCorpse>false</careIfWornByCorpse>
    </apparel>
  </ThingDef>
  
</Defs>