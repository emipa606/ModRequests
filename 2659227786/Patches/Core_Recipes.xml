<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <operations>
      <!-- Add synth recipes to basic crafting spot -->
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="CraftingSpot"]/recipes</xpath>
        <value>
          <li>ARR_CookMealSimple</li>
          <li>ARR_CookMealSimpleBulk</li>
          <li>ARR_CookTravelRations</li>
          <li>ARR_CookTravelRationsBulk</li>
        </value>
      </li>

    </operations>
  </Operation>
</Patch>