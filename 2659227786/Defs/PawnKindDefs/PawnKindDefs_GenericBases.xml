<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Defs>

  <!-- base pawnKind for starting scenario pawns -->
  <PawnKindDef Name="ARR_BaseColonistKind" ParentName="BasePlayerPawnKind" Abstract="True">
    <combatPower>40</combatPower>
    <forceNormalGearQuality>true</forceNormalGearQuality>
    <defaultFactionType>ARR_GenericPlayerFaction</defaultFactionType>
    <chemicalAddictionChance>0</chemicalAddictionChance>
    <apparelTags>
      <li>ARR_Colonist</li>
    </apparelTags>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
    <apparelMoney>350~600</apparelMoney>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>13~21</initialResistanceRange>
  </PawnKindDef>

  <!-- base pawnKind for Eorzean Colony faction members -->
  <PawnKindDef Name="ARR_EorzeanColonistBase" Abstract="True">
    <defaultFactionType>ARR_GenericFaction</defaultFactionType>
    <combatPower>40</combatPower>
    <maxGenerationAge>50</maxGenerationAge>
    <invNutrition>2.55</invNutrition>
    <invFoodDef>ARR_MealTravel</invFoodDef>
    <chemicalAddictionChance>0</chemicalAddictionChance>
    <apparelTags>
      <li>ARR_Generic</li>
      <li>ARR_Universal</li>
    </apparelTags>
    <weaponMoney>75~300</weaponMoney>
    <apparelMoney>600~900</apparelMoney>
    <initialWillRange>0~1</initialWillRange>
    <initialResistanceRange>10~17</initialResistanceRange>
  </PawnKindDef>

  <!-- base pawnKind for tribal members -->
  <PawnKindDef Name="ARR_TribalBase" Abstract="True">
    <combatPower>40</combatPower>
    <maxGenerationAge>50</maxGenerationAge>
    <invNutrition>2.55</invNutrition>
    <invFoodDef>ARR_MealTravel</invFoodDef>
    <chemicalAddictionChance>0</chemicalAddictionChance>
    <apparelTags>
      <li>ARR_Universal</li>
    </apparelTags>
    <weaponMoney>75~300</weaponMoney>
    <apparelMoney>600~900</apparelMoney>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>13~21</initialResistanceRange>
  </PawnKindDef>

</Defs>
