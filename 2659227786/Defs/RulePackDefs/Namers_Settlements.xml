<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Generic Faction settlement name generator -->
  <RulePackDef>
    <defName>ARR_NamerSettlement_Generic</defName>
    <include>
      <li>ARR_GenericFactionNameUtility</li>
      <li>ARR_GenericSettlementNameUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_name->[ARRGFProperNames]'s [ARRGenericSettlementPlaceNames]</li>
        <li>r_name(p=2)->[ARRGFProperTitles]'s [ARRGenericSettlementPlaceNames]</li>
        <li>r_name(p=5)->[ARRGenericSettlementProperNames] [ARRGenericSettlementPlaceNames]</li>
        <li>r_name(p=3)->[ARRGenericSettlementAnimalNames] [ARRGenericSettlementPlaceNames]</li>
        <li>r_name(p=3)->[ARRGenericSettlementAnimalNames]'s [ARRGenericSettlementPlaceNames]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>ARR_GenericSettlementNameUtility</defName>
    <rulePack>
      <rulesFiles>
        <li>ARRGSAnimalNames->ARimReborn/Names/Names_Animals</li>
        <li>ARRGSProperNames->ARimReborn/Names/Settlement_Proper</li>
        <li>ARRGSPlaceNames->ARimReborn/Names/Settlement_Places</li>
      </rulesFiles>
      <rulesStrings>
        <li>ARRGenericSettlementAnimalNames->[ARRGSAnimalNames]</li>
        <li>ARRGenericSettlementProperNames->[ARRGSProperNames]</li>
        <li>ARRGenericSettlementPlaceNames->[ARRGSPlaceNames]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>
