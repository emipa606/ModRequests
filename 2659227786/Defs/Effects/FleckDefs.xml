<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- generic aetheric glow -->
  <FleckDef ParentName="FleckBase_Thrown">
    <defName>ARR_AetherGlow</defName>
    <graphicData>
      <texPath>ARimReborn/Effects/Fleck_AetherGlow</texPath>
      <shaderType>MoteGlow</shaderType>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <fadeInTime>0.25</fadeInTime>
    <solidTime>0.50</solidTime>
    <fadeOutTime>0.75</fadeOutTime>
  </FleckDef>

  <!-- rift tear base fleck -->
  <FleckDef ParentName="FleckBase">
    <defName>ARR_FleckRiftTear</defName>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <graphicData>
      <graphicClass>Graphic_FleckPulse</graphicClass>
      <shaderType>Mote</shaderType>
      <texPath>ARimReborn/Effects/Fleck_RiftTear</texPath>
      <drawSize>2.0</drawSize>
    </graphicData>
    <fadeInTime>0</fadeInTime>
    <fadeOutTime>1.3</fadeOutTime>
    <solidTime>0.6</solidTime>
  </FleckDef>

  <!-- rift tear particle fleck -->
  <FleckDef ParentName="FleckBase">
    <defName>ARR_FleckRiftSparks</defName>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <graphicData>
      <graphicClass>Graphic_FleckPulse</graphicClass>
      <shaderType>MoteGlow</shaderType>
      <texPath>ARimReborn/Effects/Fleck_RiftEdge</texPath>
      <drawSize>2.0</drawSize>
    </graphicData>
    <fadeInTime>0.3</fadeInTime>
    <fadeOutTime>1.3</fadeOutTime>
    <solidTime>0.3</solidTime>
  </FleckDef>

  <!-- potion sparkle -->
  <FleckDef ParentName="FleckBase_Thrown">
    <defName>ARR_FleckSparkle</defName>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <graphicData>
      <graphicClass>Graphic_FleckPulse</graphicClass>
      <shaderType>MoteGlow</shaderType>
      <texPath>ARimReborn/Effects/Fleck_Sparkle</texPath>
      <drawSize>1</drawSize>
    </graphicData>
    <fadeInTime>0.1</fadeInTime>
    <fadeOutTime>1.1</fadeOutTime>
    <solidTime>0.0</solidTime>
  </FleckDef>

  <!-- teleport ring particle -->
  <FleckDef ParentName="FleckBase_Thrown">
    <defName>ARR_TeleportRing</defName>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <graphicData>
      <graphicClass>Graphic_FleckPulse</graphicClass>
      <shaderType>MoteGlow</shaderType>
      <texPath>ARimReborn/Effects/TeleportRing</texPath>
      <drawSize>3</drawSize>
    </graphicData>
    <fadeInTime>0.1</fadeInTime>
    <fadeOutTime>0.5</fadeOutTime>
    <solidTime>0.9</solidTime>
  </FleckDef>

  <!-- teleport core glow -->
  <FleckDef ParentName="FleckBase_Thrown">
    <defName>ARR_TeleportGlow</defName>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <graphicData>
      <graphicClass>Graphic_FleckPulse</graphicClass>
      <shaderType>MoteGlow</shaderType>
      <texPath>ARimReborn/Effects/TeleportGlowBlue</texPath>
      <drawSize>2</drawSize>
    </graphicData>
    <fadeInTime>0.1</fadeInTime>
    <fadeOutTime>0.3</fadeOutTime>
    <solidTime>0.5</solidTime>
  </FleckDef>
  <FleckDef ParentName="FleckBase_Thrown">
    <defName>ARR_TeleportReturnGlow</defName>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <graphicData>
      <graphicClass>Graphic_FleckPulse</graphicClass>
      <shaderType>MoteGlow</shaderType>
      <texPath>ARimReborn/Effects/TeleportGlowViolet</texPath>
      <drawSize>2</drawSize>
    </graphicData>
    <fadeInTime>0.1</fadeInTime>
    <fadeOutTime>0.3</fadeOutTime>
    <solidTime>0.5</solidTime>
  </FleckDef>

  <!-- teleport distortion mote -->
  <ThingDef ParentName="Mote_PsychicConditionCauserEffect">
    <defName>ARR_TeleportDistortion</defName>
    <mote>
      <fadeInTime>0.10</fadeInTime>
      <solidTime>0.90</solidTime>
      <fadeOutTime>0.50</fadeOutTime>
    </mote>
    <graphicData>
      <graphicClass>Graphic_MotePulse</graphicClass>
      <texPath>Things/Mote/PsychicConditionCauserMask</texPath>
      <shaderType>MotePsychicConditionCauser</shaderType>
      <shaderParameters>
        <_distortionIntensity>0.015</_distortionIntensity>
        <_brightnessMultiplier>1.1</_brightnessMultiplier>
        <_distortionScale>40</_distortionScale>
      </shaderParameters>
      <drawSize>4</drawSize>
    </graphicData>
  </ThingDef>

</Defs>