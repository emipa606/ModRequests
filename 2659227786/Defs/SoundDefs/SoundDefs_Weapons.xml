<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- equip bow -->
  <SoundDef>
    <defName>ARR_EquipBow</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>ARimReborn/EquipBow</clipPath>
          </li>
        </grains>
        <volumeRange>
          <min>40</min>
          <max>45</max>
        </volumeRange>
        <pitchRange>
          <min>0.8940217</min>
          <max>1.084783</max>
        </pitchRange>
      </li>
    </subSounds>
  </SoundDef>
  <!-- draw bow -->
  <SoundDef>
