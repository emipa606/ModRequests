<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- use potion -->
  <SoundDef>
    <defName>ARR_UsePotion</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>ARimReborn/UsePotion</clipPath>
          </li>
        </grains>
        <volumeRange>
          <min>40</min>
          <max>40</max>
        </volumeRange>
        <pitchRange>
          <min>0.8940217</min>
          <max>1.084783</max>
        </pitchRange>
      </li>
    </subSounds>
  </SoundDef>

  <!-- aetheryte ambient sound -->
  <SoundDef>
    <defName>ARR_AetheryteAmbience</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
<!--    <sustainStartSound>GeothermalPlant_Ambience_Start</sustainStartSound>-->
<!--    <sustainStopSound>GeothermalPlant_Ambience_Stop</sustainStopSound>-->
    <subSounds>
      <li>
        <muteWhenPaused>True</muteWhenPaused>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>ARimReborn/AmbientAetheryte</clipPath>
          </li>
        </grains>
        <volumeRange>40~40</volumeRange>
        <pitchRange>1~1.015</pitchRange>
        <distRange>0~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <!-- attune start -->
  <SoundDef>
    <defName>ARR_AetheryteAttuneStart</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>ARimReborn/AttuneStart</clipPath>
          </li>
        </grains>
        <volumeRange>35~35</volumeRange>
        <pitchRange>1~1.015</pitchRange>
      </li>
    </subSounds>
  </SoundDef>
  <SoundDef>
    <defName>ARR_AetheryteAttuneEnd</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>ARimReborn/AttuneEnd</clipPath>
          </li>
        </grains>
        <volumeRange>30~30</volumeRange>
        <pitchRange>1~1.015</pitchRange>
      </li>
    </subSounds>
  </SoundDef>
  <!-- attune ambient sustainer -->
  <SoundDef>
    <defName>ARR_AetheryteAttune</defName>
    <sustain>true</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
    <sustainStartSound>ARR_AetheryteAttuneStart</sustainStartSound>
    <sustainStopSound>ARR_AetheryteAttuneEnd</sustainStopSound>
    <subSounds>
      <li>
        <muteWhenPaused>True</muteWhenPaused>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>ARimReborn/AttuneAmbient</clipPath>
          </li>
        </grains>
        <volumeRange>30~30</volumeRange>
        <pitchRange>1~1.015</pitchRange>
<!--        <distRange>0~30</distRange>-->
      </li>
    </subSounds>
  </SoundDef>

