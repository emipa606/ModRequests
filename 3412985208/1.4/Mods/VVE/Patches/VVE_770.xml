<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Vehicles Expanded</li>
		</mods>
		
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationReplace">
				<xpath>Defs/Vehicles.VehicleBuildDef[defName="MercedesGrosser_Blueprint"]/costList</xpath>
					<value>
						<costList>
							<VVE_EngineBlock>1</VVE_EngineBlock>
							<VVE_CarAlternator>4</VVE_CarAlternator>
							<VVE_CarExhaust>1</VVE_CarExhaust>
							<VVE_CarSuspension>4</VVE_CarSuspension>
							<VVE_CarWheel>4</VVE_CarWheel>
							<Steel>260</Steel>
							<ComponentIndustrial>8</ComponentIndustrial>
							<VVE_CarFuelTank>2</VVE_CarFuelTank>
							<VVE_CarTransmission>1</VVE_CarTransmission>
							<VVE_CarRadiator>1</VVE_CarRadiator>		
						</costList>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
				<xpath>Defs/Vehicles.VehicleBuildDef[defName="MercedesGrosser_Blueprint"]/researchPrerequisites</xpath>
					<value>
						<researchPrerequisites>
							<li>VVE_ComplexVehicles</li>
						</researchPrerequisites>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>
