<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="AnimalThingBase">
    <defName>Nem_Roach</defName>
    <label>Roach</label>
    <description>A small roach. Damn pests!</description>
    <statBases>
      <MoveSpeed>5.5</MoveSpeed>
      <MarketValue>15</MarketValue>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <ComfyTemperatureMax>65</ComfyTemperatureMax>
	  <LeatherAmount>10</LeatherAmount>
    </statBases>
    <tools>
      <li>
        <cooldownTime>0.75</cooldownTime>
        <power>1</power>
        <capacities>
          <li>Bite</li>
        </capacities>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
		<surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>2.5</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
	</li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.1</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>Nem_EggMiniCockroachFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>2.5</eggLayIntervalDays>
		<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>
          <min>5</min>
          <max>20</max>
        </eggCountRange>
      </li>
    </comps>
    <race>
      <packAnimal>false</packAnimal>	
      <body>BeetleLike</body>
	  <predator>false</predator>
      <petness>0.05</petness>
	  <herdAnimal>true</herdAnimal>
      <baseHungerRate>0.15</baseHungerRate>
      <baseBodySize>0.15</baseBodySize>
      <baseHealthScale>0.25</baseHealthScale>
      <foodType>OmnivoreRoughAnimal, OvivoreAnimal, CarnivoreAnimalStrict</foodType>
	  <leatherDef>Nem_Chitin</leatherDef>
      <trainability>Intermediate</trainability>
      <wildness>0.095</wildness>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
	  <nameOnTameChance>0.1</nameOnTameChance>
      <gestationPeriodDays>2.5</gestationPeriodDays>
	  <nuzzleMtbHours>24</nuzzleMtbHours>
	  <mateMtbHours>2</mateMtbHours>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(3, 1)</li>
          <li>(8, 1)</li>
          <li>(10.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>4</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.3</minAge>
          <soundWounded>Pawn_Megascarab_Wounded</soundWounded>
          <soundDeath>Pawn_Megascarab_Death</soundDeath>
          <soundCall>Pawn_Megascarab_Call</soundCall>
          <soundAngry>Pawn_Megascarab_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
	  <wildBiomes>
        <IceSheet>0</IceSheet>
		<Tundra>0.4</Tundra>
        <BorealForest>0.7</BorealForest>
		<TemperateForest>0.5</TemperateForest>
        <TropicalRainforest>1</TropicalRainforest>
		<Desert>0.1</Desert>
        <AridShrubland>0.2</AridShrubland>
		<SeaIce>0</SeaIce>
      </wildBiomes>
    </race>
