<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods><li>Vanilla Apparel Expanded</li></mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "VAE_Apparel_SuitJacket" or defName = "VAE_Headgear_Fedora" or defName="VAE_Apparel_Trousers"]/apparel/tags</xpath>
				  <value>
					<li>WesternUrban</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "VAE_Apparel_Apron"]/apparel/tags</xpath>
				  <value>
					<li>FarmerBasic</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "VAE_Apparel_Tunic"]/apparel/tags</xpath>
				  <value>
					<li>PoorBasic</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "VAE_Apparel_Trousers"]/apparel/tags</xpath>
				  <value>
					<li>SlaverElite</li>
				  </value>
				</li>				
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "VAE_Apparel_Jeans" or defName="VAE_Apparel_FleeceShirt"]/apparel/tags</xpath>
				  <value>
					<li>Western</li>
					<li>FarmerBasic</li>
				  </value>
				</li>				
				<li Class="PatchOperationAdd">
				  <xpath>Defs/PawnKindDef[defName = "D9Sheriff"]/apparelRequired</xpath>
				  <value>
					<li>VAE_Apparel_SheriffShirt</li>
				  </value>
				</li>				
			</operations>
		</match>
	</Operation>
</Patch>