			<success>Always</success>
			<operations>
				<!-- fallbacks for weapons missing with only Vanilla/VWE -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Weapon_GrenadeMolotov"]/weaponTags</xpath>
					<value>
						<li>NadeLauncher</li>
