				  <value>
					<li>Revolver</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Gun_LeverActionRifle"]/weaponTags</xpath>
				  <value>
					<li>1866</li>
