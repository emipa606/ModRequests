<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods><li>Apparello 2</li></mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Sheet" or defName = "Apparello_Chapel"]/apparel/tags</xpath> 
				  <value>
					<li>Western</li>
				  </value>
				</li>	
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Bandit" or defName = "Apparello_Vandal"]/apparel/tags</xpath> 
				  <value>
					<li>Bandana</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Brocade" or defName = "Apparello_Tophat" or defName = "Apparello_square" or defName = "Apparello_Holdem" or defName = "Apparello_Fedora"]/apparel/tags</xpath>
				  <value>
					<li>WesternUrban</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Suspender" or defName = "Apparello_Smithaprontosaurus" or defName = "Apparello_Cookaprontosaurus"]/apparel/tags</xpath>
				  <value>
					<li>FarmerBasic</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Scrapants"]/apparel/tags</xpath>
				  <value>
					<li>PoorBasic</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Jodhpurs"]/apparel/tags</xpath>
				  <value>
					<li>SlaverElite</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Longlylonglong"]/apparel/tags</xpath>
				  <value>
					<li>RebelBasic</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Jeans"]/apparel/tags</xpath>
				  <value>
					<li>Western</li>
					<li>FarmerBasic</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Cardshark"]/apparel/tags</xpath>
				  <value>
					<li>Western</li>
					<li>WesternUrban</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparel_UniPjays"]/apparel/tags</xpath>
				  <value>
					<li>PoorBasic</li>
					<li>WesternUrban</li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Apparello_Lecap"]/apparel/tags</xpath>
				  <value>
					<li>Kepi</li>
				  </value>
				</li>
				<li Class="PatchOperationRemove">
				  <xpath>Defs/ThingDef[defName = "Apparello_Trypophobiaa" or defName = "Apparello_Brocade"]/apparel/tags/li[text()='Western']</xpath>
				</li>	
			</operations>
		</match>
		<nomatch Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
				  <xpath>Defs/ThingDef[defName = "Duster"]/apparel/tags</xpath>
				  <value>
					<li>RebelBasic</li>
				  </value>
				</li>
			</operations>
		</nomatch>
	</Operation>
</Patch>