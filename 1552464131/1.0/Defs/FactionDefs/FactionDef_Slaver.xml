<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <FactionDef>
	<defName>D9Slaver</defName>
	<label>slaver aristocracy</label>
    <description>A society characterized by deep divides of class and race, where ruling aristocrats tend to be indifferent to the needs of freemen and slaves alike.\n\nThey are outright hostile to anyone who questions their way of life.</description>
	<pawnsPlural>confederates</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
	<settlementGenerationWeight>1</settlementGenerationWeight>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>president</leaderTitle>
    <expandingIconTexture>World/STown</expandingIconTexture>
    <colorSpectrum>
      <li>(1.0, 1.0, 1.0)</li>
      <li>(0.9, 0.9, 0.9)</li>
    </colorSpectrum>
    <startingGoodwill>
      <min>-70</min>
      <max>0</max>
    </startingGoodwill>
		<factionNameMaker>NamerFactionSlaverD9</factionNameMaker>
		<settlementNameMaker>NamerFactionBaseSlaverD9</settlementNameMaker>
		<techLevel>Industrial</techLevel>
		<backstoryCategories>
			<li>Civil</li>
		</backstoryCategories>
		<geneticVariance>0.3</geneticVariance>
		<hairTags>
			<li>Rural</li>
		</hairTags>
    <naturalColonyGoodwill>
      <min>-80</min>
      <max>-60</max>
    </naturalColonyGoodwill>
    <caravanTraderKinds>
      <li>Caravan_D9Slaver_Slaver</li>
	  <li>Caravan_D9Slaver_Textiles</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_D9Slaver_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_D9Slaver_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-40</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
	<!-- currently copied from Outlanders, needs some tweaking -->
	<maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(800, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
		<!-- generic mix -->
        <kindDef>Combat</kindDef>
		<commonality>50</commonality>
        <options>
			<D9SEnforcer>5</D9SEnforcer>
			<D9SlaverRegular>25</D9SlaverRegular>
			<D9SlaverGrenadier>7</D9SlaverGrenadier>
			<D9SlaverDragoon>10</D9SlaverDragoon>
		</options>
      </li>
	  <li>
		<!-- mostly regulars -->
        <kindDef>Combat</kindDef>
		<commonality>50</commonality>
        <options>
			<D9SlaverRegular>30</D9SlaverRegular>
			<D9SlaverGrenadier>3</D9SlaverGrenadier>
			<D9SlaverDragoon>5</D9SlaverDragoon>
		</options>
      </li>
	  <li>
		<!-- elite cav detachment -->
        <kindDef>Combat</kindDef>
		<commonality>10</commonality>
        <options>
			<D9SEnforcer>5</D9SEnforcer>
			<D9SlaverGrenadier>5</D9SlaverGrenadier>
			<D9SlaverDragoon>20</D9SlaverDragoon>
		</options>
      </li>
	  <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <D9FarmerS>20</D9FarmerS>
          <D9SElite>3</D9SElite>
          <D9SEnforcer>5</D9SEnforcer>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <D9STrader>1</D9STrader>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>1</Elephant>
        </carriers>
        <guards>
			<D9FarmerS>20</D9FarmerS>
			<D9SElite>1</D9SElite>
			<D9SEnforcer>2</D9SEnforcer>
			<D9SlaverRegular>10</D9SlaverRegular>
			<D9SlaverDragoon>2</D9SlaverDragoon>
		</guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
			<D9FarmerS>50</D9FarmerS>
			<D9SElite>2</D9SElite>
			<D9SEnforcer>8</D9SEnforcer>
			<D9SlaverRegular>20</D9SlaverRegular>
			<D9SlaverDragoon>8</D9SlaverDragoon>
		</options>
      </li>
    </pawnGroupMakers>
    <homeIconPath>World/WorldObjects/DefaultSettlement</homeIconPath>
  </FactionDef>
</Defs>