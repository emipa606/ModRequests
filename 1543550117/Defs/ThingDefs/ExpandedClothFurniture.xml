<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>PaddedSleepingSpot</defName>
    <label>padded sleeping spot</label>
    <description>A spot on the floor padded with raw cotton fibre. Better than sleeping on bare ground but still far from ideal.</description>
    <thingClass>Building_Bed</thingClass>
    <graphicData>
      <texPath>Things/PaddedSpot</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,4)</drawSize>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>200</WorkToBuild>
      <Mass>2</Mass>
      <BedRestEffectiveness>0.85</BedRestEffectiveness>
      <Comfort>0.5</Comfort>
      <ImmunityGainSpeedFactor>1.0</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>0.85</SurgerySuccessChanceFactor>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>true</useHitPoints>
    <size>(1,2)</size>
		<costList>
				<RawCotton>20</RawCotton>
		</costList>
    <designationCategory>Furniture</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <passability>Standable</passability>
    <drawGUIOverlay>True</drawGUIOverlay>
    <building>
      <bed_showSleeperBody>True</bed_showSleeperBody>
      <bed_healPerDay>2</bed_healPerDay>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <killedLeavings>
      <RawCotton>4</RawCotton>
    </killedLeavings>
    <comps>
			<li Class="CompProperties_RoomIdentifier">
				<roomStat>Impressiveness</roomStat>
			</li>
		</comps>
  </ThingDef>

</Defs>
