<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="BaseGraffiti" Abstract="True">
    <thingClass>GraffitiMod.Filth_Graffiti</thingClass>
    <tickerType>Normal</tickerType>
    <category>Filth</category>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <drawerType>MapMeshAndRealTime</drawerType>
    <filth>
      <placementMask>Any</placementMask>
      <cleaningSound>Interact_CleanFilth</cleaningSound>
      <rainWashes>true</rainWashes>
      <cleaningWorkToReduceThickness>1200</cleaningWorkToReduceThickness>
      <canFilthAttach>true</canFilthAttach>
    </filth>
    <building>
      <isEdifice>false</isEdifice>
      <canPlaceOverWall>true</canPlaceOverWall>
    </building>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <castEdgeShadows>false</castEdgeShadows>
    <constructEffect>ConstructDirt</constructEffect>
    <repairEffect>ConstructDirt</repairEffect>
    <statBases>
      <Flammability>0</Flammability>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="BaseGraffiti">
    <defName>GraffitiMod_Paint</defName>
    <label>graffiti</label>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Filth/Art/GraffitiMod_Paint</texPath>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
      </linkFlags>
    </graphicData>
    <statBases>
      <Beauty>-15</Beauty>
      <Cleanliness>-5</Cleanliness>
    </statBases>
  </ThingDef>
  
</Defs>