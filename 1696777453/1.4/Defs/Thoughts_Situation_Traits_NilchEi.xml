<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>Competitive</defName>
    <workerClass>PersonalityTrait.ThoughtWorker_Competitive</workerClass>
    <requiredTraits>
      <li>Competitive</li>
    </requiredTraits>
    <stages>
      <li>
        <label>satisfied with my abilities</label>
        <description>I am the best in the colony!</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
      <li>
        <label>dissatisfied with my abilities</label>
        <description>There is someone better than me! I must improve myself.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Repression</defName>
    <durationDays>60</durationDays>
    <stackLimit>10</stackLimit>
    <stackedEffectMultiplier>1.0</stackedEffectMultiplier>
    <stages>
      <li>
        <label>frustrated</label>
        <description>My mood was poor, but I chose to repress my frustration instead of acting out.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Motivated</defName>
    <workerClass>PersonalityTrait.ThoughtWorker_Motivated</workerClass>
    <requiredTraits>
      <li>Motivated</li>
    </requiredTraits>
    <stages>
      <li>
        <label>motivated</label>
        <description>This is a moment that I've been waiting for to display my skills!</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Vehement</defName>
    <workerClass>PersonalityTrait.ThoughtWorker_Vehement</workerClass>
    <requiredTraits>
      <li>Vehement</li>
    </requiredTraits>
        <stages>
          <li>
          </li>
        </stages>
  </ThoughtDef>
</Defs>
