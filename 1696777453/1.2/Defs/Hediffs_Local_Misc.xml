<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="DiseaseBase">
    <defName>FatedExpectation</defName>
    <label>determinist expectation</label>
    <description>Determinist sets their expectations based on what they perceive to be signs of their near future, rather than their materialistic situation. Will work harder when one has high expectations, and work slower when one has low expectations.</description>
    <isBad>false</isBad>
    <initialSeverity>1</initialSeverity>
    <minSeverity>1</minSeverity>
    <maxSeverity>6</maxSeverity>
    <keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
    <countsAsAddedPartOrImplant>False</countsAsAddedPartOrImplant>
    <stages>
      <li>
        <minSeverity>1</minSeverity>
        <label>extremely low</label>
        <becomeVisible>false</becomeVisible>
        <statFactors>
          <WorkSpeedGlobal>0.65</WorkSpeedGlobal>
        </statFactors>
      </li>
      <li>
        <minSeverity>2</minSeverity>
        <label>very low</label>
        <becomeVisible>false</becomeVisible>
        <statFactors>
          <WorkSpeedGlobal>0.8</WorkSpeedGlobal>
        </statFactors>
      </li>
      <li>
        <minSeverity>3</minSeverity>
        <label>low</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <minSeverity>4</minSeverity>
        <label>moderate</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <minSeverity>5</minSeverity>
        <label>high</label>
        <becomeVisible>false</becomeVisible>
        <statFactors>
          <WorkSpeedGlobal>1.2</WorkSpeedGlobal>
        </statFactors>
      </li>
      <li>
        <minSeverity>6</minSeverity>
        <label>sky high</label>
        <becomeVisible>false</becomeVisible>
        <statFactors>
          <WorkSpeedGlobal>1.35</WorkSpeedGlobal>
        </statFactors>
      </li>
    </stages>
  </HediffDef>

</Defs>
