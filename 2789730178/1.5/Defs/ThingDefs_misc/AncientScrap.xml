<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="ChunkBase" Name="VBY_AncientScrapBase" Abstract="True">
    <defName>VBY_AncientScrap</defName>
    <label>ancient scrap metal</label>
    <description>A chunk of various metals from ancient debris. Most if the metal has degraded and oxidized but with advanced molecular processing the remaining useful remnants can be isolated and extracted. It requires advanced machinery and is time-consuming.</description>
    <graphicData>
      <texPath>Things/Item/Chunk/ChunkRustedSlag</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Mass>4</Mass>
    </statBases>
    <soundDrop>ChunkSlag_Drop</soundDrop>
<stackLimit>25</stackLimit>
                <drawGUIOverlay>true</drawGUIOverlay>
    <saveCompressible>false</saveCompressible>
    <thingCategories>
      <li>VBY_AncientScrap</li>
    </thingCategories>
    <smeltable>true</smeltable>
  </ThingDef>

  <ThingDef ParentName="VBY_AncientScrapBase">
    <defName>VBY_AncientScrap_Steel</defName>
    <smeltProducts>
      <Steel>5</Steel>
    </smeltProducts>
  </ThingDef>
  <ThingDef ParentName="VBY_AncientScrapBase">
    <defName>VBY_AncientScrap_Silver</defName>
    <smeltProducts>
      <Silver>10</Silver>
    </smeltProducts>
  </ThingDef>
  <ThingDef ParentName="VBY_AncientScrapBase">
    <defName>VBY_AncientScrap_Gold</defName>
    <smeltProducts>
      <Gold>1</Gold>
    </smeltProducts>
  </ThingDef>
  <ThingDef ParentName="VBY_AncientScrapBase">
    <defName>VBY_AncientScrap_Uranium</defName>
    <smeltProducts>
      <Uranium>2</Uranium>
    </smeltProducts>
  </ThingDef>
  <ThingDef ParentName="VBY_AncientScrapBase">
    <defName>VBY_AncientScrap_Plasteel</defName>
    <smeltProducts>
      <Plasteel>1</Plasteel>
    </smeltProducts>
  </ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>VBY_AncientRazorWireMaterial</defName>
		<label>ancient razor wire</label>
		<description>A piece of ancient razor wire. Set it up in the ground to deter intruders.</description>
		<graphicData>
		  <texPath>Things/Building/Ruins/AncientRazorWire</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		  <drawSize>(1,1)</drawSize>
		</graphicData>
		<smeltable>true</smeltable>
		<statBases>
			<DeteriorationRate>0</DeteriorationRate>
			<MarketValue>1</MarketValue>
			<Mass>1.25</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<costList>
			<Steel>2</Steel>
		</costList>
	</ThingDef>



</Defs>