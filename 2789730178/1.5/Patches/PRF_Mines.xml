<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Project RimFactory Revived</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>

				<li Class="PatchOperationAdd">					<!-- Mine Shaft -->
					<xpath>Defs/ThingDef[defName="PRF_MineShaft"]/modExtensions/li[@Class="ProjectRimFactory.Common.ModExtension_ModifyProduct"]/bonusYields</xpath>
					<value>
						<VBY_AncientScrap_Steel Weight="0.1" Count="1" />
						<VBY_AncientScrap_Silver Weight="0.05" Count="1" />
						<VBY_AncientScrap_Gold Weight="0.05" Count="1" />
						<VBY_AncientScrap_Uranium Weight="0.05" Count="1" />
						<VBY_AncientScrap_Plasteel Weight="0.05" Count="1" />
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_DeepQuarry_mkI"]/modExtensions/li[@Class="ProjectRimFactory.Common.ModExtension_ModifyProduct"]/bonusYields</xpath>
					<value>
						<VBY_AncientScrap_Steel Weight="0.2" Count="1" />
						<VBY_AncientScrap_Silver Weight="0.15" Count="1" />
						<VBY_AncientScrap_Gold Weight="0.1" Count="1" />
						<VBY_AncientScrap_Uranium Weight="0.05" Count="1" />
						<VBY_AncientScrap_Plasteel Weight="0.05" Count="1" />
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_DeepQuarry_mkII"]/modExtensions/li[@Class="ProjectRimFactory.Common.ModExtension_ModifyProduct"]/bonusYields</xpath>
					<value>
						<VBY_AncientScrap_Steel Weight="0.5" Count="1" />
						<VBY_AncientScrap_Silver Weight="0.4" Count="1" />
						<VBY_AncientScrap_Gold Weight="0.3" Count="1" />
						<VBY_AncientScrap_Uranium Weight="0.2" Count="1" />
						<VBY_AncientScrap_Plasteel Weight="0.1" Count="1" />
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_DeepQuarry_mkIII"]/modExtensions/li[@Class="ProjectRimFactory.Common.ModExtension_ModifyProduct"]/bonusYields</xpath>
					<value>
						<VBY_AncientScrap_Steel Weight="0.25" Count="2" />
						<VBY_AncientScrap_Silver Weight="0.2" Count="2" />
						<VBY_AncientScrap_Gold Weight="0.15" Count="2" />
						<VBY_AncientScrap_Uranium Weight="0.1" Count="2" />
						<VBY_AncientScrap_Plasteel Weight="0.05" Count="2" />
					</value>
				</li>				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_BillTypeMiner_I"]/modExtensions/li[@Class="ProjectRimFactory.Common.ModExtension_ModifyProduct"]/bonusYields</xpath>
					<value>
						<VBY_AncientScrap_Steel Weight="0.2" Count="1" />
						<VBY_AncientScrap_Silver Weight="0.15" Count="1" />
						<VBY_AncientScrap_Gold Weight="0.1" Count="1" />
						<VBY_AncientScrap_Uranium Weight="0.05" Count="1" />
						<VBY_AncientScrap_Plasteel Weight="0.05" Count="1" />
					</value>
				</li>
			</operations>
		</match>
	</Operation>


	

</Patch>