<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <DesignatorDropdownGroupDef>
    <defName>VBY_RazorWire</defName>
    <label>razor wire</label>
  </DesignatorDropdownGroupDef>

	<ThingDef Name="VBY_AncientRazorWireBase"  ParentName="BuildingBase" Abstract="True">
		<graphicData>
			<texPath>Things/Building/Linked/VBY_AncientRazorWire</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
      <!-- <linkType>Asymmetric</linkType> -->
			<linkFlags>
				<li>Custom2</li> <!-- ?? -->
			</linkFlags>
		</graphicData>
		<uiIconPath>Things/Building/Linked/VBY_ARWUI_Icon</uiIconPath>
		<designatorDropdown>VBY_RazorWire</designatorDropdown>
		<staticSunShadowHeight>0.0</staticSunShadowHeight>
		<thingClass>Building_TrapDamager</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
	    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<constructEffect>ConstructMetal</constructEffect>
		<designationCategory>Security</designationCategory>
		<designationHotKey>Misc6</designationHotKey>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>false</rotatable>
		<tickerType>Normal</tickerType>
		<stealable>false</stealable>
		<building>
			<isTrap>true</isTrap>
			<trapDestroyOnSpring>false</trapDestroyOnSpring>
			<trapDamageCategory>Sharp</trapDamageCategory> 
			<trapPeacefulWildAnimalsSpringChanceFactor>0.30</trapPeacefulWildAnimalsSpringChanceFactor>
			<blueprintGraphicData>
				<texPath>Things/Building/Linked/VBY_AncientRazorWire_Blueprint</texPath>
			</blueprintGraphicData>
		    <expandHomeArea>false</expandHomeArea>
			<ai_chillDestination>false</ai_chillDestination>	
		</building>
		<statBases>
		  <Mass>1.5</Mass>
		  <WorkToBuild>200</WorkToBuild>
		  <Flammability>0</Flammability>
		  <Beauty>-5</Beauty>
		  <Cleanliness>-3</Cleanliness>
		  <TrapSpringChance>1.0</TrapSpringChance>
		</statBases>
		<pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>	
		<fillPercent>0.1</fillPercent>	
		<pathCost>75</pathCost>
		<damageMultipliers>
			<li>
			<damageDef>Bomb</damageDef>
			<multiplier>2</multiplier>
			</li>
			<li>
			<damageDef>Blunt</damageDef>
			<multiplier>0.80</multiplier>
			</li>
		</damageMultipliers>
		<blockLight>false</blockLight>
		<blockWind>false</blockWind>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>		
		<coversFloor>false</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<neverMultiSelect>false</neverMultiSelect>
		<holdsRoof>false</holdsRoof>
	</ThingDef>

    <ThingDef ParentName="VBY_AncientRazorWireBase">
      <defName>VBY_AncientRazorWire</defName>
      <label>rusty ancient razor wire</label>
      <description>Reconstructed ancient razor wire. It has been deteriorating for many years so is weak and rusty but still serves as a decent obstacle for intuders.</description>
		<statBases>
		  <MaxHitPoints>30</MaxHitPoints>
		  <TrapMeleeDamage>7</TrapMeleeDamage>
		</statBases>
		<costList>
			<VBY_AncientRazorWireMaterial>1</VBY_AncientRazorWireMaterial>
		</costList>
    </ThingDef>
    <ThingDef ParentName="VBY_AncientRazorWireBase">
      <defName>VBY_NewRazorWire</defName>
      <label>razor wire</label>
      <description>Razor wire made from steel. It cuts and slows down invaders.</description>
		<statBases>
		  <MaxHitPoints>60</MaxHitPoints>
		  <TrapMeleeDamage>9</TrapMeleeDamage>
		</statBases>
		<costList>
			<Steel>3</Steel>
		</costList>
    </ThingDef>


  <ThingDef ParentName="BuildingBase">
    <defName>VBY_AncientFenceBuildable</defName>
    <label>ancient fence</label>
    <description>An ancient fence made of reinforced concrete posts joined by concrete panels.</description>
    <graphicData>
      <texPath>Things/Building/Linked/AncientFence_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Asymmetric</linkType>
      <linkFlags>
        <li>Fences</li>
      </linkFlags>
      <asymmetricLink>
        <linkFlags>
          <li>Wall</li>
          <li>Rock</li>
        </linkFlags>
        <linkToDoors>true</linkToDoors>
        <drawDoorBorderEast>
          <color>(0,0,0)</color>
          <size>(0.04, 0.77)</size>
          <offset>(0.5, 0, -0.08)</offset>
        </drawDoorBorderEast>
        <drawDoorBorderWest>
          <color>(0,0,0)</color>
          <size>(0.04, 0.77)</size>
          <offset>(-0.5, 0, -0.08)</offset>
        </drawDoorBorderWest>
      </asymmetricLink>
      <shadowData>
        <volume>(1, 0.5, 0.45)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
      <damageData>
        <rect>(0.35,0.1,0.3,0.7)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Linked/AncientFence_UI</uiIconPath>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>170</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <costStuffCount>3</costStuffCount>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <blockWind>false</blockWind>
    <fillPercent>0.55</fillPercent>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Structure</designationCategory>
    <canOverlapZones>false</canOverlapZones>
	<placingDraggableDimensions>1</placingDraggableDimensions>
    <fertility>0</fertility>
    <building>
      <isInert>true</isInert>
      <isFence>true</isFence>
      <ai_chillDestination>false</ai_chillDestination>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <ai_neverTrashThis>true</ai_neverTrashThis>
      <relatedBuildCommands>
        <li>PenMarker</li>
        <li>FenceGate</li>
      </relatedBuildCommands>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Fence_Blueprint</texPath>
        <graphicClass>Graphic_Appearances</graphicClass>
      </blueprintGraphicData>
    </building>
  </ThingDef>
	

</Defs>