<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>VBY_ExtractMetalFromAncientSlag</defName>
    <label>extract metal from ancient debris</label>
    <description>Use advanced molecular isolation techniques to extract useful metal from chunks of ancient debris.</description>
    <jobString>extracting metal from ancient debris.</jobString>
    <workAmount>650</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
	<researchPrerequisite>VBY_MetalExtraction</researchPrerequisite>
	<recipeUsers>
        <li>ElectricSmelter</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>VBY_AncientScrap_Steel</li>
            <li>VBY_AncientScrap_Silver</li>
            <li>VBY_AncientScrap_Gold</li>
            <li>VBY_AncientScrap_Uranium</li>
            <li>VBY_AncientScrap_Plasteel</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Smelted</li>
    </specialProducts>
    <fixedIngredientFilter>
      <thingDefs>
         <li>VBY_AncientScrap_Steel</li>
         <li>VBY_AncientScrap_Silver</li>
         <li>VBY_AncientScrap_Gold</li>
         <li>VBY_AncientScrap_Uranium</li>
         <li>VBY_AncientScrap_Plasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

</Defs>