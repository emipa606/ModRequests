<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>WP_RawWinterBlooms</defName>
    <label>winterblooms</label>
    <description>Raw winterblooms.</description>
    <possessionCount>10</possessionCount>
    <graphicData>
      <texPath>Things/Items/Resources/PlantFoodRaw/WinterBloomPlantResource</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.3</MarketValue>
    </statBases>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>30</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="ResourceBase">
    <defName>WP_CoolstrandCloth</defName>
    <label>coolstrand</label>
    <description>Fabric spun from microfibers extracted from coolstrand mushrooms. It is very tough, good at insulating, and protects exceptionally well against blunt.</description>
    <graphicData>
      <texPath>Things/Items/Resources/Coolstrand</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>5.5</MarketValue>
      <Mass>0.032</Mass>
      <Flammability>0.4</Flammability>
      <DeteriorationRate>3</DeteriorationRate>
      <StuffPower_Armor_Sharp>1.40</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>3.00</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>1.40</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>50</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>20</StuffPower_Insulation_Heat>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>30</minRewardCount>
    <stuffProps>
      <categories>
        <li>Fabric</li>
      </categories>
      <commonality>0.20</commonality>
      <color>(56,178,170)</color>
      <statFactors>
        <Flammability>0.4</Flammability>
        <MaxHitPoints>1.3</MaxHitPoints>
        <Beauty>3.2</Beauty>
      </statFactors>
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
    <allowedArchonexusCount>80</allowedArchonexusCount>
  </ThingDef>
  
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>WP_RawYellowBerries</defName>
    <label>Yellow brries</label>
    <description>Assorted yellow berries, commonly reffered to as gold berries due to their golden color. Nice to eat, even when raw.</description>
    <possessionCount>10</possessionCount>
    <graphicData>
      <texPath>Things/Items/Resources/PlantFoodRaw/GoldberryPlantResource</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <Mass>0.027</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>14</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <preferability>RawTasty</preferability>
      <tasteThought></tasteThought>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>
</Defs>