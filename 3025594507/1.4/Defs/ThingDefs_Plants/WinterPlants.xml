<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--=========================== Food crops ==============================-->
 <ThingDef ParentName="PlantBase">
    <thingClass>Ruyu.WinterPlants.WinterPlant</thingClass>
    <defName>WP_Plant_WinterBloom</defName>
    <label>Winterbloom plant</label>
    <description>Also known as winter lettuce. The winterbloom plant can survive and thrive in cold and harsh environments. Produces winterbloom lettuce which have a similar taste to green lettuce except it's rougher and blue.</description>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/WinterBloomPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <drawSize>0.7</drawSize>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.60</fertilityMin>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>WP_RawWinterBlooms</harvestedThingDef>
      <harvestYield>13</harvestYield>
      <sowTags>
        <li>Ground</li>
		<li>Hydroponic</li>
      </sowTags>
	  <sowResearchPrerequisites>
        <li>Research_WinterPlants</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.35</topWindExposure>
      <growDays>9.3</growDays>
      <visualSizeRange>0.3~1.4</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
      <humanFoodPlant>true</humanFoodPlant>
    </plant>
     <modExtensions>
      <li Class="Ruyu.WinterPlants.WinterPlantMod">
      </li>
     </modExtensions>
  </ThingDef>
  
    <!--=========================== Production crops ==============================-->
	<ThingDef ParentName="PlantBase">
	<thingClass>Ruyu.WinterPlants.WinterPlant</thingClass>
    <defName>WP_Plant_Coolstrand</defName>
    <label>coolstrand</label>
    <description>This fragile mushroom was genetically engineered to produce a silk net that is both difficult to tear and soft to the touch. While the mushroom takes a very long time to grow, only exotic ultra-tech fabrics outperform its coolstrand fibers.\n\n This plant is the counterpart to devilstrand, it can only grow in the cold and its extremely resistant to cold.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/CoolstrandPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <drawSize>1.2</drawSize>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <growDays>22.5</growDays>
      <sowWork>400</sowWork>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>WP_CoolstrandCloth</harvestedThingDef>
      <harvestYield>6</harvestYield>
      <neverBlightable>true</neverBlightable>
      <sowTags>
        <li>Ground</li>
		<li>Hydroponic</li>
      </sowTags>
      <sowMinSkill>10</sowMinSkill>
      <sowResearchPrerequisites>
        <li>Devilstrand</li>
		<li>Research_WinterPlants</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
      <pollution>Any</pollution>
      <fertilityMin>0.50</fertilityMin>
    </plant>
	     <modExtensions>
      <li Class="Ruyu.WinterPlants.WinterPlantMod">
      </li>
     </modExtensions>
  </ThingDef>
  
   <!--=========================== Drug crops ==============================-->

  <ThingDef ParentName="PlantBase">
    <thingClass>Ruyu.WinterPlants.WinterPlant</thingClass>
    <defName>WP_Plant_Frosty_Hops</defName>
    <label>Frosty hop plant</label>
    <description>A crop that yields hops, an essential ingredient in beer. Can only be grown in cold climates.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/WinterHopsPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.7</fertilitySensitivity>
      <growDays>5</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawHops</harvestedThingDef>
      <drugForHarvestPurposes>True</drugForHarvestPurposes>
      <harvestYield>8</harvestYield>
      <sowMinSkill>3</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
	  <sowResearchPrerequisites>
        <li>Research_WinterPlants</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
	 <modExtensions>
      <li Class="Ruyu.WinterPlants.WinterPlantMod">
      </li>
     </modExtensions>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <thingClass>Ruyu.WinterPlants.WinterPlant</thingClass>
    <defName>WP_Plant_Sharp_Smokeleaf</defName>
    <label>sharp smokeleaf plant</label>
    <description>A crop grown for the psychological effects of chemicals in its leaves. Can only be grown in cold climates. Smokeleaf leaves can be prepared into joints at the crafting spot. Smokeleaf makes a user feel relaxed, but reduces motivation, and can be addictive.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/WinterSmokeleafPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <growDays>7.50</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <drugForHarvestPurposes>True</drugForHarvestPurposes>
      <harvestedThingDef>SmokeleafLeaves</harvestedThingDef>
      <harvestYield>9</harvestYield>
      <sowMinSkill>4</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
	  <sowResearchPrerequisites>
        <li>Research_WinterPlants</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
	 <modExtensions>
      <li Class="Ruyu.WinterPlants.WinterPlantMod">
      </li>
     </modExtensions>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <thingClass>Ruyu.WinterPlants.WinterPlant</thingClass>
    <defName>WP_Plant_chilly_Psychoid</defName>
    <label>chilly psychoid plant</label>
    <description>A plant which generates the chemical compound psychite. Can only be grown in cold climates. Originally evolved as a defense mechanism to ward off plant-eating animals by overstimulating and sickening them, the psychite drug can be extracted and refined into various forms for recreational use. It is addictive.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/WinterPsychoidPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <growDays>9.00</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>PsychoidLeaves</harvestedThingDef>
      <drugForHarvestPurposes>True</drugForHarvestPurposes>
      <harvestYield>8</harvestYield>
      <sowMinSkill>6</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
	  <sowResearchPrerequisites>
        <li>Research_WinterPlants</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
      <pollution>Any</pollution>
      <fertilityMin>0.50</fertilityMin>
      <fertilitySensitivity>0.4</fertilitySensitivity>
    </plant>
	 <modExtensions>
      <li Class="Ruyu.WinterPlants.WinterPlantMod">
      </li>
     </modExtensions>
  </ThingDef>
  
      <ThingDef ParentName="PlantBase">
    <thingClass>Ruyu.WinterPlants.WinterPlant</thingClass>
    <defName>WP_Plant_Healroot</defName>
    <label>Blue healroot</label>
    <description>A slow-growing plant that can grow in cold climates only, it yields herbal medicine when harvested. Sowing and harvesting blue healroot are both very labor-intensive tasks because of its delicate shoots.\n\nHealroot was selectively bred for centuries by settlers. It is sometimes also called &quot;healer's hand&quot; by tribespeople - a nickname it owes to its five major medicinal virtues.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/WinterHealRootPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
	  <drawSize>1.1</drawSize>
    </graphicData>
