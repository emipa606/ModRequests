<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_RimshepArmor</defName>
    <label>Rimshepherd Armor</label>
    <description>Armor plates covering the body. Protects against gunfire and melee attacks.Does not impede movement like other armors.</description>
    <techLevel>Medieval</techLevel>
	<recipeMaker>
		<researchPrerequisite>PlateArmor</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmithy</li>
			<li>FueledSmithy</li>
		</recipeUsers>
	</recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/rimsheparmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>20000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>10</Mass>
      <StuffEffectMultiplierArmor>0.75</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.5</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>11</EquipDelay>
    </statBases>
    <costStuffCount>220</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>UpperHead</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/rimsheparmor</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>AnimalCUTOUTCOMPLEX</li>
        <li>Rimshepherd</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
  
