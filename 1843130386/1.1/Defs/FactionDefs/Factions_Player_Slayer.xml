<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef Abstract="True" Name="PlayerFactionBase_DOOM">
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <colorSpectrum>
	  <!--<li>(225, 31, 39)</li>-->
	  <li>(97, 127, 76)</li>
    </colorSpectrum>
  </FactionDef>
 
    <FactionDef ParentName="PlayerFactionBase_DOOM">
    <defName>RH_PlayerColony_DOOM_Marine</defName>
    <label>Slayer's Arrival</label>
    <description>A space marine outpost.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>RH_DOOM_SpaceMarine</basicMemberKind>
    <pawnSingular>colonist</pawnSingular>
    <pawnsPlural>colonists</pawnsPlural>
    <techLevel>Industrial</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Pirate</li>
        </categories>
		<commonality>0.25</commonality>
      </li>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>0.25</commonality>
      </li>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
        <commonality>0.50</commonality>
      </li>
    </backstoryFilters>
    <factionIconPath>World/SLAYERLogo2</factionIconPath>
    <playerInitialSettlementNameMaker>RH_DOOMScnBaseNames</playerInitialSettlementNameMaker>
		<factionNameMaker>RH_DOOMScnFactionNames</factionNameMaker>
    <settlementNameMaker>RH_DOOMUACBaseNames</settlementNameMaker>
    <geneticVariance>1</geneticVariance>
		<startingResearchTags>
			<li>ClassicStart</li>
		</startingResearchTags>
		<hairTags>
		    <li>Urban</li>
		    <li>Rural</li>
		</hairTags>
		
		<apparelStuffFilter>
			<thingDefs>
				<li>Synthread</li>
				<li>Hyperweave</li>
				<li>Plasteel</li>
			</thingDefs>
		</apparelStuffFilter>
  </FactionDef>  
  
