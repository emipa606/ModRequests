<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
    <defName>RH_Scenario_DOOM_Marine</defName>
    <label>At Doom's Gate</label>
    <description>You have just razed a UAC installation overrun by demons. It was a long day at work.
	
After having your lunch break, finishing the job and clocking out, you find yourself stranded in an outer rim planet with little to no supplies.</description>
    <scenario>
      <summary>A lost space marine crashes in an outer rim planet.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>RH_PlayerColony_DOOM_Marine</factionDef>
      </playerFaction>
      <parts>

        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>1</pawnCount>
          <pawnChoiceCount>3</pawnChoiceCount>
        </li>

        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>DropPods</method>
          <visible>false</visible>
        </li>		  
			    
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RHGun_DOOM_SuperShotgun</thingDef>
          <count>1</count>
        </li>
		
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RHGun_DOOM_UACEMGPistol</thingDef>
          <count>1</count>
        </li>	
		
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineUltratech</thingDef>
          <count>2</count>
        </li>	
		
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RN_UACMealSurvivalPack</thingDef>
          <count>3</count>
        </li>

		
		<li Class="ScenPart_ForcedTrait">
			<def>ForcedTrait</def>
			<chance>0.90</chance>
			<context>PlayerStarter</context>
			<trait>Tough</trait>
		</li>
		
		<li Class="ScenPart_ForcedTrait">
			<def>ForcedTrait</def>
			<chance>0.80</chance>
			<context>PlayerStarter</context>
			<trait>Bloodlust</trait>
		</li>		
		
		<li Class="ScenPart_ForcedTrait">
			<def>ForcedTrait</def>
			<chance>0.70</chance>
			<context>PlayerStarter</context>
			<trait>Nerves</trait>
			<degree>2</degree>
		</li>	
		
		<li Class="ScenPart_ForcedTrait">
			<def>ForcedTrait</def>
			<chance>0.60</chance>
			<context>PlayerStarter</context>
			<trait>Immunity</trait>
			<degree>1</degree>
		</li>
		
		<li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ShipChunk</thingDef>
          <count>3</count>
        </li>		
		
		<li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>RN_UACMealSurvivalPack</thingDef>
          <count>5</count>
        </li>		
		
		<li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>MedicineUltratech</thingDef>
          <count>1</count>
        </li>		


        <!-- Game start dialog -->
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>After waking up naked and alone, you survive an invasion of hellish creatures in a Union Aerospace installation. No big deal; That wasn't your first rodeo.
		  
Having managed to find an escape pod, the creatures of this new world you're about to crash on will probably try to kill you too.

The thought of that makes you very angry.</text>
          <closeSound>RH_DOOM_OpeningSting</closeSound>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>

</Defs>
