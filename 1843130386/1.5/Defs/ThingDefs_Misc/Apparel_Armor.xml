<Defs>

<!-- ==================================== Original =====================================-->

	<ThingDef ParentName="RHArmorMachineableBase_DOOM">
    <defName>RHApparel_DOOM2016_PraetorSuit</defName>
    <label>praetor suit</label>
    <description>A suit of power armor created for Night Sentinels, a highly and technologically advanced race of warriors. It enhances the user's physical abilities significantly. It was subjected by the UAC to numerous tolerance tests, and found to be almost impervious to damage.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <!--<recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>-->
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Display/PraetorSuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <MaxHitPoints>500</MaxHitPoints>
      <Mass>15</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.55</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.65</ArmorRating_Blunt>
      <ArmorRating_Heat>0.7</ArmorRating_Heat>
      <Insulation_Cold>50</Insulation_Cold>
      <Insulation_Heat>60</Insulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>2.0</MoveSpeed>
	  <AimingDelayFactor>-0.2</AimingDelayFactor>
	  <WorkSpeedGlobal>1.0</WorkSpeedGlobal>
	  <MeleeDodgeChance>1.5</MeleeDodgeChance>
	  <MeleeHitChance>1.5</MeleeHitChance>
	  <Flammability>-1.2</Flammability>	 
    </equippedStatOffsets>
	
	<thingCategories>
      <li>RHApparel_PoweredArmor</li>
    </thingCategories>

    <costList>
      <ComponentSpacer>8</ComponentSpacer>
      <Plasteel>120</Plasteel>
    </costList>
		<apparel>
		<careIfWornByCorpse>false</careIfWornByCorpse>
			<bodyPartGroups>
				<li>Torso</li>
                <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Armor/PraetorSuit</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
        <li>RH_Armor_DoomSlayer</li>
		<li>PassiveCamo_Woodland_Med</li>
		<li>PrestigeCombatGear</li>
		<li>EVA</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(255, 255, 255)</only>
        </li>
      </options>
    </colorGenerator>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
  </ThingDef>
  
