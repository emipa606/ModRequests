<Defs>
  
  
<!-- ================================== Original ====================================-->

  <ThingDef ParentName="RHArmorHelmetMakeableBase_DOOM">
    <defName>RHApparel_DOOM2016_PraetorSuitHelmet</defName>
    <label>Praetor Suit helmet</label>
    <description>The helmet worn with the Praetor Suit. Comes with a Heads Up Display that enhances the user's situational awareness and accuracy.
	
This helmet fully protects the wearer from toxic fallouts and psychic field effects.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <!--<recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>-->
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Display/PraetorHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>0.1</generateCommonality>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>2.0</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.3</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Heat>1.0</ArmorRating_Heat>
      <Insulation_Cold>20</Insulation_Cold>
      <Insulation_Heat>20</Insulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
	
		<equippedStatOffsets>
		    <ShootingAccuracyPawn>0.25</ShootingAccuracyPawn>
			<ToxicEnvironmentResistance>1.0</ToxicEnvironmentResistance>
			<PsychicSensitivity>-1.0</PsychicSensitivity>
			<Flammability>-1.0</Flammability>	  
			<MentalBreakThreshold>-0.01</MentalBreakThreshold>
		</equippedStatOffsets>
		
    <thingCategories>
      <li>RHHeadgear_PoweredArmorHelmets</li>
    </thingCategories>
	
    <costList>
      <ComponentSpacer>6</ComponentSpacer>
      <Plasteel>40</Plasteel>
    </costList>
		<apparel>
		<careIfWornByCorpse>false</careIfWornByCorpse>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Helmet/PraetorHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
        <li>RH_Helmet_DoomSlayer</li>
		<li>PassiveCamo_Urban_Med</li>
		<li>PrestigeCombatGear</li>
		<li>EVA</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
  </ThingDef>
  
