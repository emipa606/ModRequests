  <!--==================================== Melee ====================================-->


  <ThingDef Name="DOOMBaseMeleeWeapon" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Industrial</techLevel>
    <smeltable>true</smeltable>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>

    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

  <ThingDef Name="DOOMBaseMeleeWeapon_Sharp" ParentName="DOOMBaseMeleeWeapon" Abstract="True">
    <recipeMaker>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Silver</li>
          <li>Gold</li>
          <li>WoodLog</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

  <ThingDef Name="DOOMBaseMeleeWeapon_Blunt" ParentName="DOOMBaseMeleeWeapon" Abstract="True">
    <recipeMaker>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Silver</li>
          <li>Gold</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

  <ThingDef Name="DOOMBaseMeleeWeapon_Sharp_Quality" Abstract="True" ParentName="DOOMBaseMeleeWeapon_Sharp">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
