<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <RecipeDef>
	<defName>Brew_GingerAle</defName>
	<label>Carbonation GingerAle</label>
	<description>Carbonating GingerAle bottles</description>
	<jobString>Carbonating bottles.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
	<effectWorking>Cook</effectWorking>
	<soundWorking>Recipe_Brewing</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
		<li>Brewery</li>
  </recipeUsers>
	<workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>Rimginger</li>
	      </thingDefs>
	    </filter>
	    <count>16</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>Rimginger</li>
	  </thingDefs>
	</fixedIngredientFilter>
	<products>
	  <Gingerale>4</Gingerale>
	</products>
	<workSkill>Cooking</workSkill>
		<skillRequirements>
			<Cooking>3</Cooking>
	     </skillRequirements>
			<researchPrerequisite>Brewing</researchPrerequisite>
  </RecipeDef>

  <RecipeDef>
    <defName>Make_RimGingerbread</defName>
    <label>make Rim-Gingerbread</label>
    <description>Make Rim-Gingerbread, with rice flour, egg, butter, and Rim-Ginger.</description>
    <jobString>Making Gingerbread.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <workAmount>1000</workAmount>
    
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawRice</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Rimginger</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>EggsUnfertilized</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Milk</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
 
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawRice</li>
        <li>Rimginger</li>
        <li>Milk</li>
      </thingDefs>
      <categories>
        <li>EggsUnfertilized</li>
      </categories>
    </fixedIngredientFilter>
    
    <products>
      <RimGingerbread>10</RimGingerbread>
    </products>
    <workSkill>Cooking</workSkill>
   
  </RecipeDef>

</Defs>