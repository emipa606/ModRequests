<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef>
      <defName>Gingerale</defName>
      <label>Ginger Ale</label>
      <description>A carbonated drink that is sweet and fragrant.</description>
      <graphicData>
        <texPath>Things/Item/Resource/Gingerale</texPath>
        <graphicClass>Graphic_StackCount</graphicClass>
        <drawSize>1.0</drawSize>
      </graphicData>
      <rotatable>false</rotatable>
      <stackLimit>30</stackLimit>
      <soundInteract>Standard_Drop</soundInteract>
      <soundDrop>Standard_Drop</soundDrop>
      <thingClass>ThingWithComps</thingClass>
      <category>Item</category>
      <resourceReadoutPriority>Middle</resourceReadoutPriority>
      <useHitPoints>true</useHitPoints>
      <selectable>true</selectable>
      <altitudeLayer>Item</altitudeLayer>
      <drawGUIOverlay>true</drawGUIOverlay>
      <pathCost>15</pathCost>
      <socialPropernessMatters>true</socialPropernessMatters>
      <alwaysHaulable>true</alwaysHaulable>
      <comps>
        <li Class="CompProperties_Forbiddable"/>
      </comps>
      <statBases>
        <DeteriorationRate>0.5</DeteriorationRate>
        <MarketValue>4.0</MarketValue>
        <Beauty>0.0</Beauty>
        <Mass>0.35</Mass>        
        <Nutrition>0.08</Nutrition>
      </statBases>
      <thingCategories>
          <li>Foods</li>
      </thingCategories>
      <ingestible>
        <preferability>NeverForNutrition</preferability>
        <joyKind>IngestingGinger</joyKind>
        <foodType>Processed</foodType>
        <joy>0.30</joy>
        <nurseable>true</nurseable>
        <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
        <ingestSound>Ingest_Beer</ingestSound>
        <chairSearchRadius>25</chairSearchRadius>
        <ingestCommandString>Drink {0}</ingestCommandString>
        <ingestReportString>Drinking {0}.</ingestReportString>
        <ingestHoldOffsetStanding>
          <northDefault>
            <offset>(0.18,0,0)</offset>
          </northDefault>
        </ingestHoldOffsetStanding>
        <outcomeDoers>
          <li Class="IngestionOutcomeDoer_GiveHediff">
            <hediffDef>BuffGingerAle</hediffDef>
            <severity>1.0</severity>
          </li>
        </outcomeDoers>
      </ingestible>
      
    </ThingDef>

</Defs>