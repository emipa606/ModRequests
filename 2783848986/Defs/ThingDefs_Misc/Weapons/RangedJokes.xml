	<!-- ======================================================== -->
	<ThingDef ParentName="BaseWeaponJokeRanged">
		<defName>Joke_Bow</defName>
		<label>bow</label>
		<description>Cloth infused with Jokium in order to create a special weapon that looks like a cute bow. Upon activation, the bow itself unfurls and has a spectral bowstring appear before it, allowing the user to fire spectral arrows. A weapon for magical girls.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/Joke_Bow_Open</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Bow_Small</soundInteract>
		<costList>
			<Cloth>75</Cloth>
			<Joke_Jokium>60</Joke_Jokium>
		</costList>
		<statBases>
			<MarketValue>19500</MarketValue>
			<WorkToMake>10000</WorkToMake>
			<Mass>0.2</Mass>
			<AccuracyTouch>0.50</AccuracyTouch>
			<AccuracyShort>0.70</AccuracyShort>
			<AccuracyMedium>0.95</AccuracyMedium>
			<AccuracyLong>0.70</AccuracyLong>
			<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>JokeRanged</li>
		</weaponTags>
		<weaponClasses>
			<li>Ranged</li>
			<li>RangedLight</li>
		</weaponClasses>
		<recipeMaker>
			<skillRequirements>
				<Crafting>15</Crafting>
			</skillRequirements>
		</recipeMaker>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Joke_BowArrow</defaultProjectile>
				<warmupTime>1.35</warmupTime>
				<range>35</range>
				<soundCast>Bow_Small</soundCast>
			</li>
		</verbs>
		<tools>
			<li>
				<label>bow</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>1</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<comps>
			<li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
				<groundGraphic>
					<texPath>Things/Item/Equipment/WeaponRanged/Joke_Bow</texPath>
					<graphicClass>Graphic_Single</graphicClass>
					<shaderType>CutoutComplex</shaderType>
				</groundGraphic>
			</li>
		</comps>
	</ThingDef>
