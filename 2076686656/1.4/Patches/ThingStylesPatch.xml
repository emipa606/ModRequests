<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Base Defs -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[@Name="IdeoTableStyleBase"]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/Things[@Name="IdeoColumnStyleBase"]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				
				<!-- Sculptures -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Christian_Sculpture")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Islamic_Sculpture")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Buddhist_Sculpture")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Hindu_Sculpture")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Morbid_Sculpture")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Totemic_Sculpture")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
