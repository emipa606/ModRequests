				</li>
				
				<!-- Altars -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Morbid_Altar")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Totemic_Altar")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				
				<!-- Stools -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[defName="Morbid_Stool"]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[defName="Totemic_Stool"]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				
				<!-- Doors -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[defName="Techist_Autodoor"]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
				
				<!-- Shelves -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingStyleDef[starts-with(defName,"Techist_Shelf")]/graphicData</xpath>
					<value>
						<shaderType>CutoutComplex</shaderType>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
