  <ThingDef ParentName="StoneBlocksBase">
    <defName>MixedStoneBlocks</defName>
    <label>mixed stone blocks</label>
    <description>Blocks of multiple types of stone.</description>

    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>

    <statBases>
      <Mass>1.1</Mass>
      <SharpDamageMultiplier>1.2</SharpDamageMultiplier>
    </statBases>

    <stuffProps>
      <categories>
        <li>MixedStone</li>
      </categories>
      <color>(255,255,255)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>mixed stone</stuffAdjective>
      <statFactors>
        <Beauty>1.75</Beauty>  
        <MaxHitPoints>1.084</MaxHitPoints>
        <WorkToBuild>7.85</WorkToBuild>
        <WorkToMake>1.3</WorkToMake>
      </statFactors>
      <statOffsets>
        <Beauty>3</Beauty>
      </statOffsets>
    </stuffProps>

    <graphicData>
      <texPath>Things_Items</texPath>
      <color>(255,255,255)</color>
    </graphicData>
  </ThingDef>
  
  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>Make_MixedStoneBlocks</defName>
    <label>make mixed stone blocks</label>
    <description>Cuts various stone chunks into blocks</description>

    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <MixedStoneBlocks>20</MixedStoneBlocks>
    </products>
  </RecipeDef>
  
  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>Make_MixedStoneBlocksBulk</defName>
    <label>make mixed stone blocks in bulk</label>
    <description>Cuts many stone chunks into blocks</description>

    <workAmount>4000</workAmount>

    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <MixedStoneBlocks>60</MixedStoneBlocks>
    </products>
  </RecipeDef>

