				<Operation Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[	defName="CODZP_BuyDeadshotDaiquiri" or 
											defName="CODZP_BuyDoubleTap" or 
											defName="CODZP_BuyDoubleTapII" or
