			<modId>Robotrowful.CODZombies</modId>
			<key>PerkColaWorkAmount</key>
			<defaultValue>120</defaultValue>
			<apply>
				<Operation Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[@Name="CodZP_BuyPerkaColas"]/workAmount</xpath>
