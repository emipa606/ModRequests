<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <XmlExtensions.SettingsMenuDef>
    <defName>CODZP_SettingsMenu</defName>
    <modId>Robotrowful.CODZombies</modId>  
    <label>Call of Duty: Zombies Pack</label>
    <settings>
    <!--Factions-->
      <li Class="XmlExtensions.Setting.Text">
        <text>Factions Options</text>
        <font>Medium</font>
        <anchor>Middle</anchor>
      </li>
      <li Class="XmlExtensions.Setting.Checkbox">
        <key>EnableWeaponTags_Wonder</key>
        <label>Factions use wonder weapons</label>
        <defaultValue>False</defaultValue>
        <tooltip>Factions Pawns can now use Wonder Weapons</tooltip>
      </li>
      <li Class="XmlExtensions.Setting.Checkbox">
        <key>EnableWeaponTags_Pack</key>
        <label>Factions use pack a punch weapons</label>
        <defaultValue>False</defaultValue>
        <tooltip>Factions Pawns can now use Pack a Punch Weapons</tooltip>
      </li>
      <li Class="XmlExtensions.Setting.Checkbox">
        <key>EnableWeaponTags_WonderPack</key>
        <label>Factions use pack a punch wonder weapons</label>
        <defaultValue>False</defaultValue>
        <tooltip>Factions Pawns can now use Pack a Punch wonder Weapons</tooltip>
      </li>
      <li Class="XmlExtensions.Setting.Gap" />
      <!--<li Class="XmlExtensions.Setting.Checkbox">
        <key>DisableApothiconRaid</key>
        <label>Disable Apothicon Raids</label>
        <defaultValue>False</defaultValue>
        <tooltip>Prevents Apothicons from raiding your faction</tooltip>
      </li>-->

      <li Class="XmlExtensions.Setting.GapLine" />
      <li Class="XmlExtensions.Setting.Text">
        <text>Cheats</text>
        <font>Medium</font>
        <anchor>Middle</anchor>
      </li>
      <li Class="XmlExtensions.Setting.Text">
        <text>Use at your own discretion</text>
        <anchor>Middle</anchor>
      </li>
      <li Class="XmlExtensions.Setting.Text">
        <text>(Silver prices get multiplied by 10 of these values. Example: 120 would actually be 1200)</text>
        <anchor>Middle</anchor>
      </li>
      <li Class="XmlExtensions.Setting.Gap" />
    
    <!--PerkCola-->
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaingredients</key>
        <label>Perk A Cola ingredients</label>
        <defaultValue>Silver</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaWorkAmount</key>
        <label>Perk A Cola Work Amount (Lower = Faster)</label>
        <defaultValue>120</defaultValue>
      </li>
     <!--Individual Prices-->
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaCost_Dead</key>
        <label>Deadshot Daiquiri Price</label>
        <defaultValue>150</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaCost_DTap</key>
        <label>Double Tap Price</label>
        <defaultValue>200</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaCost_DDTap</key>
        <label>Double Tap II Price</label>
        <defaultValue>300</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaCost_Jug</key>
        <label>Juggernog Price</label>
        <defaultValue>250</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaCost_Quick</key>
        <label>Quick Revive Price</label>
        <defaultValue>150</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaCost_Speed</key>
        <label>Speed Cola Price</label>
        <defaultValue>300</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaCost_Stam</key>
        <label>Stamin-Up Price</label>
        <defaultValue>200</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.GapLine" />
      <!--Duration-->
      <li Class="XmlExtensions.Setting.Gap" />
      <li Class="XmlExtensions.Setting.Text">
        <text>Time duration for perk a colas. All perk a colas lose 1 Severity Per day. However Double Tap II loses 5 Per day.</text>
        <anchor>Middle</anchor>
      </li>
      <li Class="XmlExtensions.Setting.Text">
        <text>Each Value is counted in days till perk wear out</text>
        <anchor>Middle</anchor>
      </li>
      <li Class="XmlExtensions.Setting.Gap" />
      
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaDuration_Dead</key>
        <label>Deadshot Daiquiri Duration</label>
        <defaultValue>5</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaDuration_DTap</key>
        <label>Double Tap Duration</label>
        <defaultValue>5</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaDuration_DDTap</key>
        <label>Double Tap II Duration</label>
        <defaultValue>5</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaDuration_Jug</key>
        <label>Juggernog Duration</label>
        <defaultValue>5</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaDuration_Quick</key>
        <label>Quick Revive Duration</label>
        <defaultValue>5</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaDuration_Speed</key>
        <label>Speed Cola Duration</label>
        <defaultValue>5</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>PerkColaDuration_Stam</key>
        <label>Stamin-Up Duration</label>
        <defaultValue>5</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.GapLine" />
    <!--Mystery Box-->
      <li Class="XmlExtensions.Setting.Textbox">
        <key>MysteryWorkingredients</key>
        <label>Mystery Box ingredients</label>
        <defaultValue>Silver</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>MysteryWorkingCost</key>
        <label>Mystery Box Item Cost</label>
        <defaultValue>150</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Textbox">
        <key>MysteryWorkAmount</key>
        <label>Mystery Box Work Amount (Lower = Faster)</label>
        <defaultValue>330</defaultValue>
      </li>
      <li Class="XmlExtensions.Setting.Gap" />
      <li Class="XmlExtensions.Setting.ResetSettings"/>
    </settings>
  </XmlExtensions.SettingsMenuDef>
</Defs>