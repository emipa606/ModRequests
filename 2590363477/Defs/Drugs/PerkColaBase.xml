<?xml version="1.0" encoding="utf-8" ?>
<Defs> 

<ThingDef Name="CODZP_MakeablePerkACola" Abstract="True">
    <techLevel>Industrial</techLevel>
    <rotatable>false</rotatable>
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <drawerType>MapMeshOnly</drawerType>
    <useHitPoints>true</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <selectable>true</selectable>
    <tradeability>Sellable</tradeability>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>8</stackLimit>
    <thingCategories>
      <li>CodZP_PerkaColas</li>
    </thingCategories>
    <alwaysHaulable>true</alwaysHaulable>
    <pathCost>14</pathCost>
    <burnableByRecipe>true</burnableByRecipe>
    <resourceReadoutPriority>Last</resourceReadoutPriority>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <MarketValue>500</MarketValue>
      <Mass>0.05</Mass>
      <DeteriorationRate>2</DeteriorationRate>
      <Nutrition>0.08</Nutrition>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Beauty>1</Beauty>
    </statBases>
    <uiIconScale>0.85</uiIconScale>
    <ingestible>
      <preferability>NeverForNutrition</preferability>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <chairSearchRadius>16</chairSearchRadius>
      <foodType>Fluid, Processed</foodType>
      <joyKind>Gluttonous</joyKind>
      <joy>0.18</joy>
      <baseIngestTicks>210</baseIngestTicks>
      <nurseable>false</nurseable>
      <drugCategory>Social</drugCategory>
      <ingestSound>Ingest_Drink</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
    </ingestible>
    <allowedArchonexusCount>-1</allowedArchonexusCount>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Drug">
        <listOrder>9</listOrder>
      </li>
    </comps>
  </ThingDef>
  
