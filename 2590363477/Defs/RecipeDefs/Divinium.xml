<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>CODZP_Make_Divinium</defName>
    <label>Refine Divinium</label>
    <description>Refine the raw divinium into something less rocky.</description>
    <researchPrerequisites>
			<li>CODZP_Divinium</li>
		</researchPrerequisites>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CODZP_DiviniumChunk</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CODZP_DiviniumChunk</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <CODZP_Divinium>10</CODZP_Divinium>
    </products>
  </RecipeDef>

</Defs>
