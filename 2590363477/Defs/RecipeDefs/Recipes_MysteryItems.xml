			<li>
				<filter>
					<thingDefs>
						<li>Silver</li>
					</thingDefs>
				</filter>
				<count>150</count>
			</li>
		</ingredients>
		<products>
			<CODZP_Random_PerkCola>1</CODZP_Random_PerkCola>
