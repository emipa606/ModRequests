<Defs>
<!--Thunder-->
<ThingDef ParentName="CODZP_BaseWonderWeaponGun">
	<defName>CodZP_Gun_Thundergun</defName>
	<label>Thundergun</label>
	<description>A Contraption that fires a powerful jet of air.</description>
	<descriptionHyperlinks>
			<ThingDef>CodZP_Gun_Tundragun</ThingDef>
	</descriptionHyperlinks>
	<graphicData>
		<texPath>Things/Item/Equipment/WeaponRanged/Thunder/CodZP_Thundergun</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<drawSize>1.5</drawSize>
	</graphicData>
	<soundInteract>CodZP_Interact_Thundergun</soundInteract>
	<statBases>
		<Mass>7</Mass>
		<AccuracyTouch>0.81</AccuracyTouch>
		<AccuracyShort>0.71</AccuracyShort>
		<AccuracyMedium>0.53</AccuracyMedium>
		<AccuracyLong>0.21</AccuracyLong>
		<RangedWeapon_Cooldown>1.73</RangedWeapon_Cooldown>
	</statBases>
	<weaponTags />
	<costList>
		<Steel>150</Steel>
		<ComponentSpacer>4</ComponentSpacer>
		<ComponentIndustrial>10</ComponentIndustrial>
	</costList>
	<verbs>
		<li>
			<verbClass>AthenaFramework.Verb_ShootAngularShotgun</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>CodZP_Bullet_Thundergun</defaultProjectile>
			<warmupTime>1.60</warmupTime>
			<range>15.9</range>
			<soundCast>CodZP_Shot_Thundergun</soundCast>
			<soundCastTail>GunTail_Heavy</soundCastTail>
			<muzzleFlashScale>3</muzzleFlashScale>
		</li>
	</verbs>
	<modExtensions>
		<li Class="AthenaFramework.AngularShotgunExtension">
			<pelletCount>15</pelletCount>
			<pelletAngle>2.9</pelletAngle>
		</li>
	</modExtensions>
	<weaponClasses>
		<li>RangedHeavy</li>
		<li>ShortShots</li>
    </weaponClasses>
	<tools>
		<li>
			<label>barrel</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>11.7</power>
			<cooldownTime>2.6</cooldownTime>
		</li>
	</tools>
</ThingDef>
