<Defs>
<ThingDef ParentName="CODZP_BaseWonderWeaponGun">
	<defName>CodZP_Gun_WintersHowl</defName>
	<label>Winter's Howl</label>
	<description>A handgun designed to shoot freezing bullets</description>
	<graphicData>
		<texPath>Things/Item/Equipment/WeaponRanged/Misc/CodZP_WintersHowl</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<soundInteract>CodZP_Interact_Wintershowl</soundInteract>
	<statBases>
		<Mass>2.1</Mass>
		<AccuracyTouch>0.85</AccuracyTouch>
		<AccuracyShort>0.73</AccuracyShort>
		<AccuracyMedium>0.52</AccuracyMedium>
		<AccuracyLong>0.32</AccuracyLong>
		<RangedWeapon_Cooldown>1.67</RangedWeapon_Cooldown>
	</statBases>
	<weaponTags />
	<costList>
		<Steel>100</Steel>
		<WoodLog>20</WoodLog>
		<ComponentIndustrial>5</ComponentIndustrial>
	</costList>
	<verbs>
		<li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>CodZP_Bullet_WintersHowl</defaultProjectile>
			<warmupTime>1.45</warmupTime>
			<range>19.9</range>
			<soundCast>CodZP_Shot_Wintershowl</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>3</muzzleFlashScale>
			<warmupEffecter>CODZP_Effecter_SnowingCharge</warmupEffecter>
		</li>
	</verbs>
	<weaponClasses>
		<li>ShortShots</li>
		<li>RangedLight</li>
    </weaponClasses>
	<tools>
		<li>
			<label>grip</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
		<li>
			<label>barrel</label>
			<capacities>
				<li>Blunt</li>
				<li>Poke</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
	</tools>
</ThingDef>
