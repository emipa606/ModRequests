<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
    <mods><li>Biotech</li></mods>
    <match Class="PatchOperationSequence">
    <operations>

	  	<li Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[
									defName="CodZP_Bullet_RaygunTwoV" or
									defName="CodZP_Bullet_RaygunTwoV-PAP"]/projectile/damageDef</xpath>
            <value>     
	            <damageDef>Beam</damageDef>
            </value>
      	</li>

        <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[
								defName = "CodZP_Gun_RayGunMkTwo-V" or 
								defName = "CodZP_Gun_RayGunMkTwo-V-PAP"]/verbs/li/soundCast</xpath>
            <value>
                <soundCast>Shot_MiniFlameblaster</soundCast>
            </value>
        </li>
		
    </operations>
    </match>
    </Operation>
</Patch>