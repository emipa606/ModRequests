<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
  <mods>
    <li>Cursed Guns</li>
  </mods>
  <match Class="PatchOperationSequence">
    <operations>
    <li Class="PatchOperationAdd">
    <xpath>Defs</xpath>
    <value>

	<ThingDef ParentName="CODZP_Mystery_Base">
		<defName>CODZP_Random_CursedGun_Weapon</defName>
		<label>Mystery Cursed Weapon</label>
		<graphicData>
			<texPath>UI/Icons/CODZP/CodZP_RandomCursedGunWeapon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>

	<RecipeDef ParentName="CodZP_MysteryRecipe">
		<defName>CODZP_RandomizeCursedWeapon</defName>
		<label>Random Cursed Weapon</label>
		<description>Get a random from Cursed Guns</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Silver</li>
					</thingDefs>
				</filter>
				<count>150</count>
			</li>
		</ingredients>
		<products>
			<CODZP_Random_CursedGun_Weapon>1</CODZP_Random_CursedGun_Weapon>
		</products>
	</RecipeDef>

	<MysteryBoxFrameWork.ItemReplacerDef ParentName="GlobalWeaponAllowedStuff">
		<defName>Replacer_RandomCursedGunWeapons</defName>
		<targetItem>CODZP_Random_CursedGun_Weapon</targetItem>
		<qualityGenerator>Gift</qualityGenerator>
		<producedItems>
			<CursedGun_MacSixTeen>1</CursedGun_MacSixTeen>
			<CursedGun_Lugernikov>1</CursedGun_Lugernikov>
			<CursedGun_PKMini>1</CursedGun_PKMini>
			<CursedGun_GSTFourFour>1</CursedGun_GSTFourFour>
			<CursedGun_MPZweiundvierzig>1</CursedGun_MPZweiundvierzig>
			<CursedGun_SaigaEleven>1</CursedGun_SaigaEleven>
			<CursedGun_Obrez>1</CursedGun_Obrez>
			<CursedGun_AmericanNinety>1</CursedGun_AmericanNinety>
			<CursedGun_TomNine>1</CursedGun_TomNine>
			<CursedGun_Deaglov>1</CursedGun_Deaglov>
			<CursedGun_Skorpiov>1</CursedGun_Skorpiov>
			<CursedGun_AKFourPointSeven>1</CursedGun_AKFourPointSeven>
			<CursedGun_PPCyka>1</CursedGun_PPCyka>
			<CursedGun_Khaukhat>1</CursedGun_Khaukhat>
			<CursedGun_KammyGun>1</CursedGun_KammyGun>
			<CursedGun_ASFAL>1</CursedGun_ASFAL>
			<CursedGun_ZipTwoTwo>1</CursedGun_ZipTwoTwo>
			<CursedGun_ZipTwoTwoThrown>1</CursedGun_ZipTwoTwoThrown>
			<CursedGun_Makeagle>1</CursedGun_Makeagle>
			<CursedGun_SawPoint>1</CursedGun_SawPoint>
			<CursedGun_Kniper>1</CursedGun_Kniper>
			<CursedGun_Gluger>1</CursedGun_Gluger>
			<CursedGun_Llock>1</CursedGun_Llock>
			<CursedGun_Bossmerg>1</CursedGun_Bossmerg>
			<CursedGun_Dongopod>1</CursedGun_Dongopod>
			<CursedGun_DongopodRubber>1</CursedGun_DongopodRubber>
			<CursedGun_Fringspield>1</CursedGun_Fringspield>
			<CursedGun_ScopedPistol>1</CursedGun_ScopedPistol>
		</producedItems>
	</MysteryBoxFrameWork.ItemReplacerDef>
    </value>
    </li> 
    </operations>

  </match>
  </Operation>
</Patch>