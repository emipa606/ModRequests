    <Gunplay.GunPropDef>
        <defName>CodZP_Hells_Retriever</defName>
        <trail>CODZP_TrailOrange</trail>
    </Gunplay.GunPropDef>

<!--End of Patch-->
    </value>
    </li>
    </operations>
    </match>
    </Operation>
