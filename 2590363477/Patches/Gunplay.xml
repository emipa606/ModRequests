        <defName>CODZP_TrailPurple</defName>
        <graphicData>
            <texPath>Gunplay/Effects/Guntrail</texPath>
            <shaderType>TransparentPostLight</shaderType>
            <graphicClass>Graphic_Single</graphicClass>
            <color>(140, 0, 255)</color>
