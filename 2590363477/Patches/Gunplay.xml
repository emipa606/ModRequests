<?xml version="1.0" encoding="utf-8" ?>
<Patch>
 
    <Operation Class="PatchOperationFindMod">
    <mods><li>Gunplay</li></mods>
    <match Class="PatchOperationSequence">
    <operations>
    <li Class="PatchOperationAdd">
    <xpath>Defs</xpath>
    <value>
    
<!--Green Trails-->
    <Gunplay.ProjectileTrailDef ParentName="GunplayProjectileTrailDefault">
        <defName>CODZP_TrailGreen</defName>
        <graphicData>
            <texPath>Gunplay/Effects/Guntrail</texPath>
            <shaderType>TransparentPostLight</shaderType>
            <graphicClass>Graphic_Single</graphicClass>
            <color>(100,255,60)</color>
        </graphicData>
        <trailWidth>0.15</trailWidth>
    </Gunplay.ProjectileTrailDef>

    <Gunplay.GunPropDef>
        <defName>CodZP_Gun_Acidgat</defName>
        <trail>CODZP_TrailGreen</trail>
    </Gunplay.GunPropDef>
    <Gunplay.GunPropDef>
        <defName>CodZP_Gun_Acidgat-PAP</defName>
        <trail>CODZP_TrailGreen</trail>
    </Gunplay.GunPropDef>

<!--Blue Trails-->
    <Gunplay.ProjectileTrailDef ParentName="GunplayProjectileTrailDefault">
        <defName>CODZP_TrailBlue</defName>
        <graphicData>
            <texPath>Gunplay/Effects/Guntrail</texPath>
            <shaderType>TransparentPostLight</shaderType>
            <graphicClass>Graphic_Single</graphicClass>
            <color>(68, 85, 206)</color>
        </graphicData>
        <trailWidth>0.15</trailWidth>
    </Gunplay.ProjectileTrailDef>

    <Gunplay.GunPropDef>
        <defName>CodZP_Hells_Retriever-PAP</defName>
        <trail>CODZP_TrailBlue</trail>
    </Gunplay.GunPropDef>

<!--Purple Trails-->
