        <mods>
            <li>Decorative Railway Prop</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="CAT_DRP_EMD_SD40_Loco"]</xpath>
            <value>
                <researchPrerequisites>
                    <li>Research_SRTS_Trains_Diesel</li>
                </researchPrerequisites>
            </value>
        </match>
    </Operation>
</Patch>