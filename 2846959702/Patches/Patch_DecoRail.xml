<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Decorative Railway Prop</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="CAT_DRP_Handcar" or defName="CAT_DRP_Flatcar" or defName="CAT_DRP_Flatcar_C_Pipes" or @Name="RailBase" or @Name="SleeperBase" or @Name="SignBase" or @Name="CargoBase" or defName="CAT_DRP_Signpost"]</xpath>
            <value>
                <researchPrerequisites>
                    <li>Research_SRTS_Trains_Metal_Rails</li>
                </researchPrerequisites>
            </value>
        </match>
    </Operation>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Decorative Railway Prop</li>
        </mods>
        <match Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="CAT_DRP_Handcar"]/label</xpath>
            <value>
                <label>Decorative Handcar</label>
            </value>
        </match>
    </Operation>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Decorative Railway Prop</li>
