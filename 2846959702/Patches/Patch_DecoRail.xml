                <researchPrerequisites>
                    <li>Research_SRTS_Trains_Steam_Engine</li>
                </researchPrerequisites>
            </value>
        </match>
    </Operation>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Decorative Railway Prop</li>
        </mods>
