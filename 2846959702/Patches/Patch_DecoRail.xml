                <researchPrerequisites>
                    <li>Research_SRTS_Trains_Metal_Rails</li>
                    <li>Electricity</li>
                </researchPrerequisites>
            </value>
        </match>
    </Operation>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Decorative Railway Prop</li>
        </mods>
