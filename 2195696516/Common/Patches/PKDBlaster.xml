<?xml version="1.0" encoding="utf-8" ?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
          <li>Blade Runner PKD Blaster</li>
        </mods>
        <match Class="PatchOperationSequence">			
            <operations>
                <li Class="PatchOperationAdd">					
		          <xpath>Defs</xpath>
		            <value>
			           <ThingDef ParentName="VBY_BulkCratesGunsBase">
						<defName>VBY_Crate_WTGaussPistol</defName>
						<label>crate of guns</label>
						<description>A crate packed with guns.</description>
						<graphicData>
							<texPath>Things/Item/Resource/VBY_Crate</texPath>  <!-- here -->
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>1.50</drawSize>
						</graphicData>
						<statBases>
							<MarketValue>2360</MarketValue>       <!--  1 Each  -->
							<Mass>29</Mass>	   
						</statBases>
						<costList>
							<VBY_BladeRunner_Blaster>15</VBY_BladeRunner_Blaster>  <!--  Here -->							
							<WoodLog>5</WoodLog>
						</costList>
						<killedLeavings>
							<!--  Here -->
							<VBY_BladeRunner_Blaster>3</VBY_BladeRunner_Blaster>
							<WoodLog>4</WoodLog>
						</killedLeavings>						
					</ThingDef>
		            </value>
				</li>
			</operations>
        </match>
	</Operation>
	
	
	
</Patch>	