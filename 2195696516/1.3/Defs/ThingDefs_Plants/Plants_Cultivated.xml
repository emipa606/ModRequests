<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="PlantBase">
    <defName>VBY_PlantSalvia</defName>
    <label>salvia</label>
    <description>The WTF just happpened plant. Time to get weird.</description>
    <statBases>      
      <Beauty>2</Beauty>
	  <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.15</Nutrition>
    </statBases>    
	<graphicData>
      <texPath>Things/Plants/SalviaPlant/SalviaPlant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>	
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <dieIfLeafless>true</dieIfLeafless>      
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>VBY_SalviaProduct</harvestedThingDef>
      <harvestAfterGrowth>0.15</harvestAfterGrowth>
      <harvestYield>15</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
		<li>Decorative</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>7</growDays>      
      <fertilitySensitivity>0.4</fertilitySensitivity>
      <visualSizeRange>0.4~1.2</visualSizeRange>
    </plant>
  </ThingDef>
  
  <!--  Morning Glory  -->
  
