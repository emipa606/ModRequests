<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <!-- The implant item -->
  <ThingDef ParentName="BodyPartProstheticBase">
    <defName>NV_TapetumImplant</defName>
    <label>retro-reflector eye implant</label>
    <description>An organic implant that enhances night vision but reduces effectiveness in bright light.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things_Misc/HealthItem_TapetumImplant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!-- <shaderType>CutoutComplex</shaderType> -->
    </graphicData>
    <recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>
        <Intellectual>4</Intellectual>
      </skillRequirements>
      <researchPrerequisite>TapetumImplant</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <NV_TapetumRaw>1</NV_TapetumRaw>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Steel>20</Steel>
    </costList>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>0.05</Mass>
    </statBases>
    <techHediffsTags>
      <li>Advanced</li>
      <li>Photosensitivity</li>
    </techHediffsTags>
  </ThingDef>

  <!-- The Secret Ingredient -->
  <ThingDef ParentName="BodyPartNaturalBase">
    <defName>NV_TapetumRaw</defName>
    <label>extracted tapetum lucidum</label>
    <description>An extracted tapetum lucidum - the organ responsible for night vision in many mammals. With some work this could be fashioned into an implant suitable for humanoids.</description>
    <statBases>
      <MarketValue>150</MarketValue>
      <Mass>1</Mass>
    </statBases>
    <graphicData>
      <texPath>Things_Misc/HealthItem_TapetumRaw</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!-- <shaderType>CutoutComplex</shaderType> -->
    </graphicData>
    <tradeTags><li>ExoticMisc</li></tradeTags>
  </ThingDef>


</Defs>