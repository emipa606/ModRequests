<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ##### Neolithic ##### -->
    <!-- +++++ Sandals +++++ -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>Beto_Modern_Nike</defName>
		<label>nike shoes</label>
		<description>A pair nike shoes.</description>
		<graphicData>
			<texPath>Things/Footwear/Nike</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.5</generateCommonality>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<costList>
		<Cloth>5</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.15</Mass>
			<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>1</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.0</EquipDelay>
			<DeteriorationRate>2.5</DeteriorationRate>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.05</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
            <li MayRequire="VanillaExpanded.VAPPE">VAE_BootsAndGloves</li>
            <li>Apparel</li>
        </thingCategories>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Feet</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Industrial</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Slave</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>
	



</Defs>