<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>MechanicalNature_Hediff</defName>
		<label>Mechanical Body</label>
		<description>This pawn is of a mechanical nature. It does not need sustenance or rest, and it will never fall ill to biological ailments or limitations.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<isBad>false</isBad>
        <tendable>false</tendable>		
		<everCurableByItem>false</everCurableByItem>		
		<scenarioCanAdd>false</scenarioCanAdd>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<defaultLabelColor>(0.6, 0.6, 0.65)</defaultLabelColor>	
		<stages>
		    <li>
		        <becomeVisible>false</becomeVisible>
			    <makeImmuneTo>
	                <li>FoodPoisoning</li>
	                <li>ToxicBuildup</li>
	                <li>DrugOverdose</li>
	                <li>HeartAttack</li>
	                <li>Carcinoma</li>
	                <li>GutWorms</li>
	                <li>MuscleParasites</li>
	                <li>WoundInfection</li>
	                <li>Flu</li>	   
	                <li>Plague</li>
	                <li>Malaria</li>
	                <li>SleepingSickness</li>
	                <li>ChemicalBurn</li>
	                <li>Frostbite</li>
	                <li>ChemicalDamageModerate</li>
	                <li>ChemicalDamageSevere</li>
	                <li>Cirrhosis</li>
	                <li>Scaria</li>
	                <li>SandInEyes</li>
	                <li>DirtInEyes</li>
	                <li>MudInEyes</li>
	                <li>GravelInEyes</li>
	                <li>WaterInEyes</li>	   
	    		</makeImmuneTo>
		    </li>
            <li MayRequire="Dylan.CSL">
                <capMods>
                    <li>
                        <capacity>Fertility</capacity>
                        <setMax>0.0</setMax>
                    </li>
                </capMods>
            </li>	
            <li MayRequire="Safe.Job.World">
                <capMods>
                    <li>
                        <capacity>RJW_Fertility</capacity>
                        <setMax>0.0</setMax>
                    </li>
                </capMods>
            </li>			
		</stages>
	</HediffDef>  	  
</Defs>
