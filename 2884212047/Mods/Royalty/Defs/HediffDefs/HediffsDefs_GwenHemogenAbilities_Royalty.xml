<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  
   <HediffDef ParentName = "PsycastHediffBase">
    <defName>GBS_CirculateAntigen_Royalty</defName>
    <label>circulating antigen</label>
    <description>An antigen created with hemogen is circulating. Royalty</description>
    <isBad>false</isBad>
    <stages>
      <li>
		<statFactors>
			<InjuryHealingFactor>2</InjuryHealingFactor>
			<ImmunityGainSpeed>2</ImmunityGainSpeed>
        </statFactors>
        <painFactor>0.1</painFactor>
      </li>
    </stages>
  </HediffDef>
  
   <HediffDef ParentName = "PsycastHediffBase">
    <defName>GBS_HemoMusculus_Royalty</defName>
    <label>hemo musculus</label>
    <description>Hemogen was turned into raw physical strength.</description>
    <isBad>false</isBad>
    <stages>
      <li>
		<statFactors>
			<MeleeDamageFactor>2</MeleeDamageFactor>
			<CarryingCapacity>2</CarryingCapacity>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
  
   <HediffDef ParentName = "PsycastHediffBase">
    <defName>GBS_CirculateStimulant_Royalty</defName>
    <label>hemo musculus</label>
    <description>A mental stimulant is circulating.</description>
    <isBad>false</isBad>
    <stages>
      <li>
		<statFactors>
			<PsychicSensitivity>1.2</PsychicSensitivity>
            <PsychicEntropyRecoveryRate>1.2</PsychicEntropyRecoveryRate>
            <PsychicEntropyGain>0.8</PsychicEntropyGain>
			<ResearchSpeed>1.2</ResearchSpeed>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName = "PsycastHediffBase">
    <defName>GBS_AdrenalinSurge_Royalty</defName>
    <label>adrenalin surge</label>
    <description>Hemogen has been converted into adrenaline.</description>
    <isBad>false</isBad>
    <stages>
      <li>
		<statOffsets>
			<MoveSpeed>0.1</MoveSpeed>
		</statOffsets>
		<capMods>
			<li>
			  <capacity>Consciousness</capacity>
			  <offset>0.1</offset>
			</li>
			<li>
			  <capacity>Moving</capacity>
			  <offset>0.1</offset>
			</li>
		</capMods>
		<statFactors>
			<RestFallRateFactor>0.8</RestFallRateFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
</Defs>