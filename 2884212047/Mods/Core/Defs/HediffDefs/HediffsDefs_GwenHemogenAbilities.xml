<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <HediffDef ParentName="DiseaseBase">
    <defName>GBS_CirculateAntigen_Core</defName>
    <label>circulating antigen</label>
    <description>An antigen created with hemogen is circulating.</description>
    <isBad>false</isBad>
    <tendable>false</tendable>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>7500~7500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
		<statFactors>
			<InjuryHealingFactor>2</InjuryHealingFactor>
			<ImmunityGainSpeed>2</ImmunityGainSpeed>
        </statFactors>
        <painFactor>0.1</painFactor>
      </li>
    </stages>
  </HediffDef>
  <HediffDef ParentName="DiseaseBase">
    <defName>GBS_HemoMusculus_Core</defName>
    <label>hemo musculus</label>
    <description>Hemogen was turned into raw physical strength.</description>
    <isBad>false</isBad>
    <tendable>false</tendable>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>7500~7500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
		<statFactors>
			<MeleeDamageFactor>2</MeleeDamageFactor>
			<CarryingCapacity>2</CarryingCapacity>
        </statFactors>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="DiseaseBase">
    <defName>GBS_CirculateStimulant_Core</defName>
    <label>circulate stimulant</label>
    <description>A mental stimulant is circulating.</description>
    <isBad>false</isBad>
    <tendable>false</tendable>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>22500~22500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
		<statFactors>
			<PsychicSensitivity>1.2</PsychicSensitivity>
			<ResearchSpeed>1.2</ResearchSpeed>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
  
  
  <HediffDef ParentName="DiseaseBase">
    <defName>GBS_HemogenHardening</defName>
    <label>hemogen hardening</label>
    <description>An iron like hemogen coating.</description>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>7500~7500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
		<statFactors>
			<Flammability>0.05</Flammability>
			<IncomingDamageFactor>0.05</IncomingDamageFactor>
			<StaggerDurationFactor>0</StaggerDurationFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="DiseaseBase">
    <defName>GBS_AdrenalinSurge_Core</defName>
    <label>adrenalin surge</label>
    <description>Hemogen has been converted into adrenaline.</description>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>7500~7500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
		<statOffsets>
			<MoveSpeed>0.1</MoveSpeed>
		</statOffsets>
		<capMods>
			<li>
			  <capacity>Consciousness</capacity>
			  <offset>0.1</offset>
			</li>
			<li>
			  <capacity>Moving</capacity>
			  <offset>0.1</offset>
			</li>
		</capMods>
		<statFactors>
			<RestFallRateFactor>0.8</RestFallRateFactor>
        </statFactors>
		
      </li>
    </stages>
  </HediffDef>
  
</Defs>