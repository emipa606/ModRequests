<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- Constructoid -->  
    <ThingDef ParentName="LightMechanoid">
      <defName>ST_ArmoredConstructoid</defName>
      <label>Armored constructoid</label>
      <description>A small mechanoid designed to perform construction tasks. It is equipped with a mechanical arm and medium armor.</description>
      <statBases>
        <ConstructionSpeed>0.6</ConstructionSpeed>
		<ArmorRating_Blunt>0.30</ArmorRating_Blunt>
        <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
      </statBases>
      <race>
    <body>Mech_Light</body>
	<baseHealthScale>2</baseHealthScale>
        <mechEnabledWorkTypes>
          <li>Construction</li>
        </mechEnabledWorkTypes>
        <lifeStageAges>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>0</minAge>
            <soundWounded>Pawn_Mech_Constructoid_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_Constructoid_Death</soundDeath>
            <soundCall>Pawn_Mech_Constructoid_Call</soundCall>
          </li>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>100</minAge>
            <soundWounded>Pawn_Mech_Constructoid_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_Constructoid_Death</soundDeath>
            <soundCall>Pawn_Mech_Constructoid_Call</soundCall>
          </li>
        </lifeStageAges>
      </race>
      <tools>
        <li>
          <label>torso</label>
          <capacities>
            <li>Blunt</li>
          </capacities>
          <power>10</power>
          <cooldownTime>2.9</cooldownTime>
          <linkedBodyPartsGroup>Torso</linkedBodyPartsGroup>
          <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        </li>
      </tools>
	      <comps>
      <li Class="MYDE_ExGTUrbanCombat.CompProperties_SpawnBarricade">
        <Label>Lay out a Barricade</Label>
        <Desc>Arrange a movable Barricade, which will blast directly in front when it is destroyed</Desc>
        <!--冷却状态下的图标-->
        <UI_UnFinish_Patch>Icon/False1</UI_UnFinish_Patch>
        <!--可用状态下的图标-->
        <UI_Finish_Patch>Icon/SpawnBarricade</UI_Finish_Patch>
        <!--冷却时间,2天的话是120000-->
        <ColdDownMax>120000</ColdDownMax>
        <!--射程-->
        <Range>14</Range>
        <!--发射什么东西·对接生成掩体的Projectile-->
        <SpawnThingDef>MYDE_Projectile_SpawnBarricade</SpawnThingDef>
      </li>
    </comps>
    </ThingDef>
    
    <PawnKindDef ParentName="NonCombatLightMechanoidKind">
      <defName>ST_ArmoredConstructoid</defName>
      <label>Armored constructoid</label>
      <race>ST_ArmoredConstructoid</race>
      <lifeStages>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/ST_ArmoredConstructoid</texPath>
            <maskPath>Things/Pawn/AllegianceOverlays/ST_ArmoredConstructoid</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>1.1</drawSize>
          </bodyGraphicData>
        </li>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/ST_ArmoredConstructoid</texPath>
            <maskPath>Things/Pawn/AllegianceOverlays/ST_ArmoredConstructoid</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>1.1</drawSize>
          </bodyGraphicData>
        </li>
      </lifeStages>
	  <weaponTags>
        <li>ST_MechanicalArm</li>
      </weaponTags>
    </PawnKindDef>

	<RecipeDef ParentName="HeavyMechanoidRecipe">
    <defName>build_ST_ArmoredConstructoid</defName>
    <label>gestate an armored constructoid</label>
    <description>gestate an armored constructoid</description>
	<gestationCycles>2</gestationCycles>
	<researchPrerequisite>BasicMechtech</researchPrerequisite>
	<ingredients Inherit="False">
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SubcoreBasic</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <ST_ArmoredConstructoid>1</ST_ArmoredConstructoid>
    </products>
    <descriptionHyperlinks>
      <ThingDef>ST_ArmoredConstructoid</ThingDef>
    </descriptionHyperlinks>
  </RecipeDef>
</Defs>