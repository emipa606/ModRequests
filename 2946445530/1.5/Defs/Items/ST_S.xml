<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>ST_StableStock</defName>
    <label>StableStock</label>
    <description>A bidirectional stable gun stock that allows inexperienced shooters to shoot steadily.</description>
    <possessionCount>2</possessionCount>
    <graphicData>
      <texPath>Things/Weapon/ST_StableStock</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>5</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <MarketValue>32</MarketValue>
      <Mass>2.5</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <allowedArchonexusCount>10</allowedArchonexusCount>
  </ThingDef>
  
</Defs>