<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo6x35mmCaseless</defName>
		<label>6x35mm Caseless</label>
		<parent>AmmoRifles</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRailgunRifle</iconPath>
	</ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_6x35mmCaseless</defName>
		<label>6x35mm Caseless</label>
		<ammoTypes>
			<Ammo_6x35mmCaseless_Sabot>Bullet_6x35mmCaseless_Sabot</Ammo_6x35mmCaseless_Sabot>
		</ammoTypes>
		<similarTo>AmmoSet_Rifle</similarTo>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="6x35mmCaselessBase" ParentName="AmmoBase" Abstract="True">
		<description>A long caseless cartridge with a solid propellant enveloping the slim projectile.</description>
		<statBases>
			<Bulk>0.03</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo6x35mmCaseless</li>
		</thingCategories>
	</ThingDef>
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="6x35mmCaselessBase">
		<defName>Ammo_6x35mmCaseless_Sabot</defName>
		<label>6x35mm Caseless cartridge (Sabot)</label>
		<graphicData>
			<texPath>Things/Ammo/Railgun/Rifle</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.12</MarketValue>
			<Mass>0.018</Mass>
		</statBases>
		<ammoClass>Sabot</ammoClass>
		<cookOffProjectile>Bullet_6x35mmCaseless_Sabot</cookOffProjectile>
	</ThingDef>
		
	<!-- ================== Projectiles ================== -->
	
	<ThingDef Name="Base6x35mmCaselessBullet" ParentName="BaseBulletCE" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Needle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>

	  <ThingDef ParentName="Base6x35mmCaselessBullet">
		<defName>Bullet_6x35mmCaseless_Sabot</defName>
		<label>6x35 Caseless bullet (Sabot)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
		  <damageDef>Bullet</damageDef>
		  <damageAmountBase>8</damageAmountBase>
		  <armorPenetrationSharp>21</armorPenetrationSharp>
		  <armorPenetrationBlunt>44.18</armorPenetrationBlunt>
		  <speed>255</speed>
		</projectile>
	  </ThingDef>


	<!-- ==================== Recipes ========================== -->
  
	  <RecipeDef ParentName="AdvancedAmmoRecipeBase">
	    <defName>MakeAmmo_6x35mmCaseless_Sabot</defName>
	    <label>make 6x35mm Caseless (Sabot) cartridge x500</label>
	    <description>Craft 500 6x35mm Caseless (Sabot) cartridges.</description>
	    <jobString>Making 6x35mm Caseless (Sabot) cartridges.</jobString>
	    <ingredients>
	      <li>
		<filter>
		  <thingDefs>
		    <li>Steel</li>
		  </thingDefs>
		</filter>
		<count>10</count>
	      </li>
	      <li>
		<filter>
		  <thingDefs>
		    <li>Uranium</li>
		  </thingDefs>
		</filter>
		<count>4</count>
	      </li>
	      <li>
		<filter>
		  <thingDefs>
		    <li>Chemfuel</li>
		  </thingDefs>
		</filter>
		<count>4</count>
	      </li>
	    </ingredients>
	    <fixedIngredientFilter>
	      <thingDefs>
		<li>Steel</li>
		<li>Uranium</li>
		<li>Chemfuel</li>
	      </thingDefs>
	    </fixedIngredientFilter>
	    <products>
	      <Ammo_6x35mmCaseless_Sabot>500</Ammo_6x35mmCaseless_Sabot>
	    </products>
	    <workAmount>3400</workAmount>
	  </RecipeDef>
	
</Defs>
