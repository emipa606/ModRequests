<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--这是修改破墙炸弹的class-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationReplace">
      <success>Always</success>
      <xpath>Defs/ThingDef[defName="MYDE_Projectile_DemolitionBomb"]/thingClass</xpath>
      <value>
        <thingClass>MYDE_ExGTUrbanCombat.Projectile_DemolitionBomb_CE</thingClass>
      </value>
    </match>
  </Operation>
  <!--这是修改破墙炸弹的伤害·我还没改数值-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationReplace">
      <success>Always</success>
      <xpath>Defs/ThingDef[defName="MYDE_Projectile_DemolitionBomb"]/projectile</xpath>
      <value>
        <projectile>
          <damageDef>Bomb</damageDef>
          <explosionRadius>3.9</explosionRadius>
          <speed>50</speed>
          <explosionDelay>0</explosionDelay>
          <stoppingPower>5</stoppingPower>
        </projectile>
      </value>
    </match>
  </Operation>
  <!--这是修改机动掩体的comp·我还没改数值-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationReplace">
      <success>Always</success>
      <xpath>Defs/ThingDef[defName="ST_Barricade"]/comps</xpath>
      <value>
        <comps>
          <li Class="MYDE_ExGTUrbanCombat.CompProperties_BarricadeExplosion_CE">
            <explosiveRadius>1.9</explosiveRadius>
            <explosiveDamageType>Bomb</explosiveDamageType>
            <!--这个是伤害，除了下面的不同，其他的所有字段都跟原版的CompProperties_Explosive相同-->
            <damageAmountBase>10</damageAmountBase>
            <!--这个是爆炸间隔-->
            <ExplosiveRange_Num>2</ExplosiveRange_Num>
            <!--这个是最大爆炸距离-->
            <ExplosiveRange_Max>9</ExplosiveRange_Max>
          </li>
        </comps>
      </value>
    </match>
  </Operation>
  <!--这是修改机枪塔的comp·我还没改数值-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationReplace">
      <success>Always</success>
      <xpath>Defs/ThingDef[defName="MYDE_Turret_MicroTurret"]/comps</xpath>
      <value>
        <comps>
          <li Class="MYDE_ExGTUrbanCombat.CompProperties_MicroTurretExplosion_CE">
            <explosiveRadius>2.9</explosiveRadius>
            <explosiveDamageType>Bomb</explosiveDamageType>
            <!--这个是伤害，除了下面的不同，其他的所有字段都跟原版的CompProperties_Explosive相同-->
            <damageAmountBase>10</damageAmountBase>
            <!--自爆倒计时150000 = 6小时-->
            <ExplosionLabel>倒计时</ExplosionLabel>
            <ExplosionDelayTickMax>216000</ExplosionDelayTickMax>
          </li>
        </comps>
      </value>
    </match>
  </Operation>
</Patch>