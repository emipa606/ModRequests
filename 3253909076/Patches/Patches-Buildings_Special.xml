<?xml version="1.0" encoding="utf-8" ?>


<!-- Makes the archonexus building provide power :3 -->
<Patch>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchonexusCore"]/comps</xpath>
    <value>
        <li Class="CompProperties_Power">
            <compClass>CompPowerPlant</compClass>
            <basePowerConsumption>-6000</basePowerConsumption>
            <transmitsPower>true</transmitsPower>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="GrandArchotechStructure"]/comps</xpath>
    <value>
        <li Class="CompProperties_Power">
            <compClass>CompPowerPlant</compClass>
            <basePowerConsumption>-4500</basePowerConsumption>
            <transmitsPower>true</transmitsPower>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="MajorArchotechStructure"]/comps</xpath>
    <value>
        <li Class="CompProperties_Power">
            <compClass>CompPowerPlant</compClass>
            <basePowerConsumption>-4000</basePowerConsumption>
            <transmitsPower>true</transmitsPower>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchotechTower"]</xpath>
    <value> <!-- Archotech tower doesn't have a comp, so we have to add our own-->
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerPlant</compClass>
                <basePowerConsumption>-3500</basePowerConsumption>
                <transmitsPower>true</transmitsPower>
            </li>
        </comps>
    </value>
</Operation>

</Patch>