<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Risk of Rain: UES Contact Light Armory (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
			
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="RoRA_BladeMarine_Helmet" or 
					defName="RoRA_Conscript_Helmet" or 
					defName="RoRA_Engineer_Helmet" or 
					defName="RoRA_Specialist_Helmet" or 
					defName="RoRA_Ranger_Helmet" or 
					defName="RoRA_BladeMarine_Armor" or 
					defName="RoRA_Conscript_Armor" or 
					defName="RoRA_Enforcer_Armor" or 
					defName="RoRA_Engineer_Armor" or 
					defName="RoRA_Specialist_Armor" or defName="RoRA_Ranger_Armor"]/costList/Plasteel</xpath>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="RoRA_Conscript_Helmet" or 
					defName="RoRA_Miner_Helmet" or 
					defName="RoRA_Conscript_Armor" or 
					defName="RoRA_Miner_Armor"]/costList/Steel</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="RoRA_Enforcer_Helmet" 
					or defName="RoRA_Specialist_Helmet" 
					or defName="RoRA_Miner_Helmet" or 
					defName="RoRA_Enforcer_Armor" or 
					defName="RoRA_Specialist_Armor" or 
					defName="RoRA_Miner_Armor"]/costList/Uranium</xpath>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RoRA_Engineer_Helmet"]</xpath>
					<value>
						<costStuffCount>20</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RoRA_BladeMarine_Helmet" or defName="RoRA_Enforcer_Helmet" or defName="RoRA_Ranger_Helmet"]</xpath>
					<value>
						<costStuffCount>40</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RoRA_Conscript_Helmet" or defName="RoRA_Specialist_Helmet"]</xpath>
					<value>
						<costStuffCount>60</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RoRA_Engineer_Armor" or defName="RoRA_Ranger_Armor"]</xpath>
					<value>
						<costStuffCount>80</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RoRA_Conscript_Armor"]</xpath>
					<value>
						<costStuffCount>90</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RoRA_Miner_Helmet" or defName="RoRA_BladeMarine_Armor"]</xpath>
					<value>
						<costStuffCount>120</costStuffCount>
					</value>	
				</li>
	
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RoRA_Enforcer_Armor"]</xpath>
					<value>
						<costStuffCount>130</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RoRA_Specialist_Armor" or defName="RoRA_Miner_Armor"]</xpath>
					<value>
						<costStuffCount>140</costStuffCount>
					</value>	
				</li>
			</operations>
		</match>
	</Operation>
</Patch>