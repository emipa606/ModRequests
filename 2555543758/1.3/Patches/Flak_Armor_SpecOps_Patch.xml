<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Flak Armor: SpecOps Edition</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="Apparel_FlakArmor"]/costList/Steel</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="Apparel_FlakArmor"]/costList/Plasteel</xpath>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_FlakArmor"]</xpath>
					<value>
						<costStuffCount>190</costStuffCount>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>