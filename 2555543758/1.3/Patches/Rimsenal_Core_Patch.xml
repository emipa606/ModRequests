<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rimsenal - Core</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
			
				<li Class="VanillaStuffableArmor.PatchOperationChangeApparelBase">
					<xpath>/Defs/ThingDef[@Name = "GDArmorBase"]</xpath>
					<key>stuffCategories</key>
					<value>
						<li>Metallic</li>
						<li>Woody</li>
						<li>Stony</li>
					</value>	
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/thingDef[defName="Carbonsuit"]/costList/Cloth</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/thingDef[defName="Apparel_SecurityArmor" or defName="Apparel_SecurityHelmet" or defName="Apparel_PioneerH"
					or defName="Apparel_NomadH" or defName="Apparel_MedicH" or defName="Apparel_Strikesuit" or defName="Apparel_StrikesuitH"
					or defName="Apparel_AssaultArmorH"]/costList/Steel</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/thingDef[defName="Apparel_Dropsuit" or defName="Apparel_AssaultArmor" or defName="Apparel_FSArmor" or defName="Apparel_FSArmorH"
					or defName="Apparel_Korp" or defName="Apparel_ReflactorArmor" or defName="Apparel_ReflactorArmorH" or defName="Apparel_HazardCarapace"
					or defName="Apparel_HazardCarapaceH" or defName="Apparel_CloseCombatArmor"]/costList/Uranium</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/thingDef[defName="GDArmorBase" or defName="Apparel_SecurityHelmet" or defName="Apparel_PioneerH"
					or defName="Apparel_NomadH" or defName="Apparel_MedicH" or defName="Apparel_Dropsuit" or defName="Apparel_DropsuitH"
					or defName="Apparel_Strikesuit" or defName="Apparel_StrikesuitH" or defName="Apparel_AssaultArmor"
					or defName="Apparel_AssaultArmorH" or defName="Apparel_FSArmor" or defName="Apparel_FSArmorH" or defName="Apparel_Korp"
					or defName="Apparel_ReflactorArmor" or defName="Apparel_ReflactorArmorH" or defName="Apparel_HazardCarapace"
					or defName="Apparel_HazardCarapaceH" or defName="Apparel_CloseCombatArmor" or defName="Apparel_CloseCombatHelmet"]/costList/Plasteel</xpath>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_PioneerArmor" or defName="Apparel_NomadArmor" or defName="Apparel_MedicArmor"]</xpath>
					<value>
						<costStuffCount>10</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_DropsuitH"]</xpath>
					<value>
						<costStuffCount>25</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_StrikesuitH"]</xpath>
					<value>
						<costStuffCount>30</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_CloseCombatHelmet"]</xpath>
					<value>
						<costStuffCount>40</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_ReflactorArmorH" or defName="Apparel_HazardCarapaceH"]</xpath>
					<value>
						<costStuffCount>45</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Carbonsuit"]</xpath>
					<value>
						<costStuffCount>55</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_SecurityHelmet" or defName="Apparel_FSArmorH"]</xpath>
					<value>
						<costStuffCount>60</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_NomadH"]</xpath>
					<value>
						<costStuffCount>75</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_AssaultArmorH"]</xpath>
					<value>
						<costStuffCount>80</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_PioneerH" or defName="Apparel_MedicH"]</xpath>
					<value>
						<costStuffCount>95</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_Dropsuit" or defName="Apparel_Strikesuit"]</xpath>
					<value>
						<costStuffCount>100</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_ReflactorArmor"]</xpath>
					<value>
						<costStuffCount>120</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_HazardCarapace"]</xpath>
					<value>
						<costStuffCount>125</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_AssaultArmor"]</xpath>
					<value>
						<costStuffCount>160</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_CloseCombatArmor"]</xpath>
					<value>
						<costStuffCount>180</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="Apparel_FSArmor" or defName="Apparel_Korp"]</xpath>
					<value>
						<costStuffCount>220</costStuffCount>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>