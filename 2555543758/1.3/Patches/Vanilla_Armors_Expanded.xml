<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Armour Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName = "VAE_Footwear_MarineBoots" or 
					defName = "VAE_Handwear_MarineGloves" or 
					defName = "VAE_Headgear_HeavyMarineHelmet" or 
					defName = "VAE_Apparel_HeavyMarineArmor" or 
					defName="VAE_Headgear_NightVisionGoggles" or 
					defName="VAE_Apparel_BulletproofVest" or 
					defName="VAE_Headgear_TrooperHelmet" or 
					defName="VAE_Apparel_TrooperArmor" or 
					defName="VAE_Apparel_HeavyMarineArmor"]/costList/Plasteel</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="VAE_Apparel_TrooperArmor" or defName="VAE_Apparel_HeavyMarineArmor"]/costList/Uranium</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="VAE_Headgear_BallisticGoggles" or defName="VAE_Apparel_GhillieSuit"]/costList/Steel</xpath>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Headgear_NightVisionGoggles" or defName="VAE_Apparel_GhillieSuit"]</xpath>
					<value>
						<costStuffCount>15</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Footwear_MarineBoots" or defName = "VAE_Handwear_MarineGloves"]</xpath>
					<value>
						<costStuffCount>20</costStuffCount>
					</value>	
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="VAE_Headgear_TrooperHelmet"]</xpath>
					<value>
						<costStuffCount>25</costStuffCount>
					</value>	
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Headgear_BallisticGoggles"]</xpath>
					<value>
						<costStuffCount>30</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Headgear_HeavyMarineHelmet"]</xpath>
					<value>
						<costStuffCount>45</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_BulletproofVest"]</xpath>
					<value>
						<costStuffCount>60</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="VAE_Apparel_TrooperArmor"]</xpath>
					<value>
						<costStuffCount>70</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_HeavyMarineArmor"]</xpath>
					<value>
						<costStuffCount>200</costStuffCount>
					</value>	
				</li>
				
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<!--<success>Always</success>-->
						<operations>
							<li Class="PatchOperationRemove">
								<xpath>/Defs/ThingDef[ defName="VAE_Headgear_RoyalTrooperHelmet" or defName="VAE_Apparel_RoyalTrooperArmor" or 
								defName="VAE_Headgear_RoyalSiegeHelmet" or defName="VAE_Apparel_RoyalSiegeArmor"]/costList/Plasteel</xpath>
							</li>
							
							<li Class="PatchOperationRemove">
								<xpath>/Defs/ThingDef[defName="VAE_Apparel_RoyalTrooperArmor" or defName="VAE_Apparel_RoyalSiegeArmor"]/costList/Uranium</xpath>
							</li>
							
							<li Class="PatchOperationAdd">
								<xpath>/Defs/ThingDef[defName="VAE_Headgear_RoyalTrooperHelmet"]</xpath>
								<value>
									<costStuffCount>35</costStuffCount>
								</value>	
							</li>
							
							<li Class="PatchOperationAdd">
								<xpath>/Defs/ThingDef[defName="VAE_Headgear_RoyalSiegeHelmet"]</xpath>
								<value>
									<costStuffCount>70</costStuffCount>
								</value>	
							</li>
							
							<li Class="PatchOperationAdd">
								<xpath>/Defs/ThingDef[defName="VAE_Apparel_RoyalTrooperArmor"]</xpath>
								<value>
									<costStuffCount>95</costStuffCount>
								</value>	
							</li>
							
							<li Class="PatchOperationAdd">
								<xpath>/Defs/ThingDef[defName="VAE_Apparel_RoyalSiegeArmor"]</xpath>
								<value>
									<costStuffCount>240</costStuffCount>
								</value>	
							</li>
						</operations>
					</match>	
				</li>				
				
			</operations>
		</match>
	</Operation>
</Patch>