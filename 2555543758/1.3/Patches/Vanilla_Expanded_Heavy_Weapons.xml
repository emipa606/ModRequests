<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Heavy Weapons</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="VWE_Apparel_Exoframe"]/costList/Steel</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="VWE_Apparel_Exoframe"]/costList/Plasteel</xpath>
				</li>
	
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="VWE_Apparel_Exoframe"]</xpath>
					<value><costStuffCount>60</costStuffCount></value>	
				</li>
				
			</operations>
		</match>
	</Operation>
</Patch>