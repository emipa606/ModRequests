<?xml version="1.0" encoding="utf-8" ?>
<Patch>


  <!--=============== Light Shock ===============-->

  <Operation Class="PatchOperationFindMod">
   <mods>
    <li>Biotech</li>
   </mods>
   <match Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
				<li Class="PatchOperationReplace">
	   <xpath>/Defs/HediffDef[defName = "ECB_LightShock"]/stages</xpath>
	   <value>
    <stages>
      <li>
        <painFactor>1.2</painFactor>
        <statFactors>
         <StaggerDurationFactor>1.2</StaggerDurationFactor>
        </statFactors>      
      </li>
    </stages>
					</value>
				</li>
			</operations>
		</match>
	</Operation>




</Patch>

