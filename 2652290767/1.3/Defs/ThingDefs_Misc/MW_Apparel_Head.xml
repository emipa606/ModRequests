<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Medieval 		Head -->
  
    <ThingDef ParentName="HatMakeableBase">
    <defName>MW_Apparel_PaddedHelmet</defName>
    <label>padded helmet</label>
    <description>A reinforced helmet with padded fabrics and leathers sewn in. While it's not as good as heavier armor, it offers effective protection while retaining mobility.</description>
    <recipeMaker>
      <researchPrerequisite>MW_PaddedArmour</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/MedievalPaddedHelmet/MW_PaddedHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.00</drawSize>
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToMake>9500</WorkToMake>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.30</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.00</ArmorRating_Heat>
      <Insulation_Cold>6.0</Insulation_Cold>
      <Insulation_Heat>3.0</Insulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/MedievalPaddedHelmet/MW_PaddedHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>MedievalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.44,0.44,0.44)</only>
        </li>
        <li>
          <only>(0.62,0.62,0.62)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

