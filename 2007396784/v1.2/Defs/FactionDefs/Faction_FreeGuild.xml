<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <FactionDef>
		<defName>FGFreeGuildFaction</defName>
		<label>Freeguild</label>
    <description>Humans from The Empire united as free people under The Freeguild. A united front of mostly militias against the horror of the world.</description>
    <pawnSingular>Free man</pawnSingular>
    <pawnsPlural>Free men</pawnsPlural>
    <goodwillDailyGain>0.20</goodwillDailyGain>
    <goodwillDailyFall>0.20</goodwillDailyFall>
    <startingGoodwill>0</startingGoodwill>
    <naturalColonyGoodwill>-50~50</naturalColonyGoodwill>
    <backstoryFilters>
      <li>
        <categories>
          <li>FGNonCombatant</li>
          <li>FGFieldMelee</li>
          <li>FGFieldSoldier</li>
          <li>FGFieldSoldierRanged</li>
          <li>FGSpawn</li>
          <li>FGFieldKnight</li>
          <li>FGFieldCommander</li>
        </categories>
      </li>
    </backstoryFilters>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <factionIconPath>Things/World/FGIcon</factionIconPath>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
	  <leaderTitle>Commander</leaderTitle>
    <techLevel>Medieval</techLevel>
    <permanentEnemy>false</permanentEnemy>
    <fixedName>The Freeguild</fixedName>
    <settlementNameMaker>NamerFGBase</settlementNameMaker>
    <pawnNameMaker>NamerFGPeople</pawnNameMaker>
    <earliestRaidDays>1</earliestRaidDays>
    <caravanTraderKinds>
      <li>Caravan_FG_BulkGoods</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_FG_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_FGBase</li>
    </baseTraderKinds>
    <hairTags>
      <li>Tribal</li>
      <li>Rural</li>
    </hairTags>
<allowedArrivalTemperatureRange>-50~45</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
        <li>
          <kindDef>Trader</kindDef>
          <traders>
            <FG_Civil>5</FG_Civil>
            <FG_Field>1</FG_Field>
          </traders>
          <carriers>
            <Muffalo>6</Muffalo>
            <Alpaca>2.5</Alpaca>
          </carriers>
          <guards>
            <FG_Civil>1</FG_Civil>
            <FG_Field>4</FG_Field>
            <FG_Pikelow>10</FG_Pikelow>
            <FG_CrossbowMid>10</FG_CrossbowMid>
            <FG_PikeMid>8</FG_PikeMid>
            <FG_GunnerMid>6</FG_GunnerMid>
            <FG_Knight>4</FG_Knight>
          </guards>
        </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <FG_Civil>1</FG_Civil>
          <FG_Field>2</FG_Field>
          <FG_Pikelow>5</FG_Pikelow>
          <FG_CrossbowMid>7</FG_CrossbowMid>
          <FG_PikeMid>10</FG_PikeMid>
          <FG_GunnerMid>7</FG_GunnerMid>
          <FG_Knight>4</FG_Knight>
          <FG_CommanderKnight>1</FG_CommanderKnight>
        </options>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <FG_Civil>5</FG_Civil>
          <FG_Field>8</FG_Field>
          <FG_Pikelow>8</FG_Pikelow>
          <FG_CrossbowMid>8</FG_CrossbowMid>
          <FG_PikeMid>10</FG_PikeMid>
          <FG_GunnerMid>7</FG_GunnerMid>
          <FG_Outrunner>5</FG_Outrunner>
          <FG_Knight>4</FG_Knight>
          <FG_CommanderKnight>1</FG_CommanderKnight>
        </options>
      </li>
      <li>
        <!-- high -->
        <kindDef>Combat</kindDef>
        <commonality>50</commonality>
        <options>
          <FG_Civil>1</FG_Civil>
          <FG_Field>2</FG_Field>
          <FG_Pikelow>5</FG_Pikelow>
          <FG_CrossbowMid>7</FG_CrossbowMid>
          <FG_PikeMid>10</FG_PikeMid>
          <FG_GunnerMid>7</FG_GunnerMid>
          <FG_Outrunner>5</FG_Outrunner>
          <FG_Knight>4</FG_Knight>
          <FG_CommanderKnight>1</FG_CommanderKnight>
        </options>
      </li>
      <li>
        <!-- mid -->
        <kindDef>Combat</kindDef>
        <commonality>80</commonality>
        <options>
          <FG_Civil>1</FG_Civil>
          <FG_Field>4</FG_Field>
          <FG_Pikelow>10</FG_Pikelow>
          <FG_CrossbowMid>10</FG_CrossbowMid>
          <FG_PikeMid>8</FG_PikeMid>
          <FG_GunnerMid>6</FG_GunnerMid>
          <FG_Outrunner>5</FG_Outrunner>
          <FG_Knight>4</FG_Knight>
        </options>
      </li>
      <li>
        <!-- low -->
        <kindDef>Combat</kindDef>
        <commonality>40</commonality>
        <options>
          <FG_Civil>5</FG_Civil>
          <FG_Field>7</FG_Field>
          <FG_Pikelow>10</FG_Pikelow>
          <FG_CrossbowMid>7</FG_CrossbowMid>
          <FG_PikeMid>4</FG_PikeMid>
        </options>
      </li>
      <li>
        <!-- trash -->
        <kindDef>Combat</kindDef>
        <commonality>20</commonality>
        <options>
          <FG_Civil>7</FG_Civil>
          <FG_Field>10</FG_Field>
          <FG_Pikelow>5</FG_Pikelow>
          <FG_CrossbowMid>3</FG_CrossbowMid>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>

</Defs>