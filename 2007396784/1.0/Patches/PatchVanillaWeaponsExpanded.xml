<?xml version="1.0" encoding="utf-8" ?>

<!-- Gunsmoke with vanilla expanded ( Chicago Ted) -->

<Patch>
<Operation Class="PatchOperationFindMod">
<mods>
<li>Vanilla Weapons Expanded</li>
</mods>
<match Class="PatchOperationSequence">
<success>Always</success>
<operations>
  <!-- Patch 1 -->
  <li Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Gun_FGHandgun"]/verbs/li/verbClass</xpath>
    <value>
      <verbClass>SmokingGun.Verb_ShootWithSmoke</verbClass>
    </value>
  </li>
  <!-- Patch 2 -->
  <li Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Gun_FGBlunderbuss"]/verbs/li/verbClass</xpath>
    <value>
      <verbClass>SmokingGun.Verb_ShootWithSmoke</verbClass>
    </value>
  </li>
  <!-- Patch 3 -->
  <li Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Gun_FGVolleyGun"]/verbs/li/verbClass</xpath>
    <value>
      <verbClass>SmokingGun.Verb_ShootWithSmoke</verbClass>
    </value>
  </li>
</operations>
</match>
</Operation>

</Patch>