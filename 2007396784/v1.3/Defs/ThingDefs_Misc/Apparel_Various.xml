  <ThingDef ParentName="ApparelMakeableBaseFG">
    <defName>Apparel_FGUniform</defName>
    <label>militia uniform</label>
    <description>A full-body uniform issued by for the free people. Consist of a comfy shirt, sturdy and thick trousers and a simple pair of boots.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/FGUniform/FGUniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <costStuffCount>120</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>1.</Mass>
      <StuffEffectMultiplierArmor>0.32</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.32</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Feet</li>
        <li>Hands</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/FGUniform/FGUniform</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>FGLow</li>
        <li>FGMid</li>
        <li>FGHigh</li>
      </tags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>FGApparelBasic</researchPrerequisite>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
