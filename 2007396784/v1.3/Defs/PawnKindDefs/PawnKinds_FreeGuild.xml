<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--  Base for Faction -->

  <PawnKindDef Name="FGBaseFaction" Abstract="True">
    <defaultFactionType>FGFreeGuildFaction</defaultFactionType>
    <race>Human</race>
    <invNutrition>1.22</invNutrition>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>
    <invFoodDef>Pemmican</invFoodDef>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <apparelRequired>
      <li>Apparel_FGUniform</li>
    </apparelRequired>
  </PawnKindDef>

  <!--  Commander -->

  <PawnKindDef ParentName="FGBaseFaction">
    <defName>FG_CommanderKnight</defName>
    <label>Free Guild knight</label>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>FGFieldCommander</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
    <combatPower>130</combatPower>
    <baseRecruitDifficulty>0.90</baseRecruitDifficulty>
    <minGenerationAge>25</minGenerationAge>
    <maxGenerationAge>999</maxGenerationAge>
    <itemQuality>Normal</itemQuality>
    <factionLeader>True</factionLeader>
    <canBeSapper>false</canBeSapper>
    <apparelMoney>800~1200</apparelMoney>
    <apparelRequired>
      <li>Apparel_FGFullPlate</li>
    </apparelRequired>
    <apparelTags>
      <li>FGHigh</li>
    </apparelTags>
    <weaponTags>
      <li>FGSword</li>
    </weaponTags>
    <weaponMoney>700~1200</weaponMoney>
    <initialWillRange>3~5</initialWillRange>
    <initialResistanceRange>19~30</initialResistanceRange>
  </PawnKindDef>

