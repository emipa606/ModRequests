<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Research Tabs -->
	<ResearchTabDef>
		<defName>AnimalGear</defName>
		<label>Animal Gear</label>
	</ResearchTabDef>
	
	<ResearchProjectDef>
		<defName>AnimalRidingGear</defName>
		<label>riding gear</label>
		<tab>AnimalGear</tab>
		<description>Craft new equipment designs aimed to improve animal riding.</description>
		<baseCost>500</baseCost>
		<techLevel>Neolithic</techLevel>
		<researchViewX>0</researchViewX>
		<researchViewY>1</researchViewY>
	</ResearchProjectDef>
	
	<ResearchProjectDef>
		<defName>ComplexAnimalClothing</defName>
		<label>animal clothing</label>
		<tab>AnimalGear</tab>
		<description>Adapt complex clothing to fit onto a variety of domestic animals.</description>
		<baseCost>750</baseCost>
		<techLevel>Medieval</techLevel>
		<prerequisites>
			<li>ComplexClothing</li>
		</prerequisites>
		<researchViewX>1</researchViewX>
		<researchViewY>1</researchViewY>
	</ResearchProjectDef>
	
	<ResearchProjectDef>
		<defName>PlateAnimalArmor</defName>
		<label>armored animals</label>
		<tab>AnimalGear</tab>
		<description>Smith plate armor specially designed for a variety of domestic animals.</description>
		<baseCost>800</baseCost>
		<techLevel>Medieval</techLevel>
		<prerequisites>
			<li>PlateArmor</li>
			<li>ComplexAnimalClothing</li>
		</prerequisites>
		<researchViewX>2</researchViewX>
		<researchViewY>1</researchViewY>
	</ResearchProjectDef>
	
	<ResearchProjectDef>
		<defName>FlakAnimalArmor</defName>
		<label>militarized animals</label>
		<tab>AnimalGear</tab>
		<description>Adapt flak armor into a number of designs specially made for a variety of animals.</description>
		<baseCost>1800</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>FlakArmor</li>
			<li>PlateAnimalArmor</li>
		</prerequisites>
		<researchViewX>3</researchViewX>
		<researchViewY>1</researchViewY>
	</ResearchProjectDef>
	
	<ResearchProjectDef>
		<defName>PoweredAnimalArmor</defName>
		<label>power armored animals</label>
		<tab>AnimalGear</tab>
		<description>Craft high tech power armor made to fit onto domestic animals.</description>
		<baseCost>8000</baseCost>
		<techLevel>Spacer</techLevel>
		<prerequisites>
			<li>PoweredArmor</li>
			<li>FlakAnimalArmor</li>
		</prerequisites>
		<researchViewX>4</researchViewX>
		<researchViewY>1</researchViewY>
	</ResearchProjectDef>
</Defs>