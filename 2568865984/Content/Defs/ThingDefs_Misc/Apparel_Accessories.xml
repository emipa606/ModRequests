			<EquipDelay>1</EquipDelay>
		</statBases>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>Animal_Apparel</li>
		</thingCategories>
		<generateAllowChance>0</generateAllowChance>
		<apparel>
		<careIfWornByCorpse>false</careIfWornByCorpse>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Animal/Apparel/Accessories/animalscarf</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Anything</li>
				<li>Soldier</li>
				<li>Worker</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

