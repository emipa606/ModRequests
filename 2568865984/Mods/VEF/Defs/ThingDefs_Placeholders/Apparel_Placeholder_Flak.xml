<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AnimalFlakArmorBase">
		<defName>Apparel_AnimalFlakArmor</defName>
		<label>universal animal flak armor</label>
		<description>A tough fabric animal jacket with armor plates sewn in. While it's not as good as solid armor, it offers effective protection against all manner of attacks while remaining quite comfortable.</description>
		<costList>
			<Cloth>50</Cloth>
			<Steel>70</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<statBases>
			<MaxHitPoints>260</MaxHitPoints>
			<WorkToMake>14000</WorkToMake>
			<Mass>7</Mass>
		</statBases>
		<apparel>
			<tags>
				<li>Animal</li>
				<li>AnimalCUTOUTCOMPLEX</li>
				<!-- <li>MedievalMilitary</li> -->
				<li>AnimalALL</li>
			</tags>
		</apparel>
		<devNote>legacy[Apparel_SmallAnimalFlakArmor,Apparel_LargeAnimalFlakArmor]</devNote>
	</ThingDef>
	
	<!-- Advanced Helmet -->
	<ThingDef ParentName="AnimalFlakHelmBase">
		<defName>Apparel_AnimalAdvancedHelmet</defName>
		<label>universal animal flak helmet</label>
		<description>A lightweight combat helmet with a complex design specifically for animals, and reinforced with plasteel. Not effective against blunt weapons.</description>
		<statBases>
			<WorkToMake>8000</WorkToMake>
			<MaxHitPoints>120</MaxHitPoints>
			<Mass>1.2</Mass>
		</statBases>
  		<costStuffCount>40</costStuffCount>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
  			<Plasteel>10</Plasteel>
		</costList>
		<apparel>
			<tags>
				<li>Animal</li>
				<li>AnimalCUTOUTCOMPLEX</li>
				<!-- <li>MedievalMilitary</li> -->
				<li>AnimalALL</li>
			</tags>
		</apparel>
		<devNote>legacy[Apparel_SmallAnimalAdvancedHelmet,Apparel_LargeAnimalAdvancedHelmet]</devNote>
	</ThingDef>
</Defs>
