<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<HediffDef>
		<defName>HiveNearQueen</defName>
		<label>near queen</label>
		<description>This creature shares a link with the queen of their hive, and suffers when separated from her.</description>
		<hediffClass>Hive.Hediff_NearQueen</hediffClass>
		<defaultLabelColor>(255, 14, 14)</defaultLabelColor>
		<isBad>false</isBad>
		<everCurableByItem>false</everCurableByItem>
		<stages>
			<li>
				<overrideLabel>near queen</overrideLabel>
				<extraTooltip>This pawn is closeby to a queen</extraTooltip>
				<minSeverity>0</minSeverity>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<overrideLabel>separated from queen</overrideLabel>
				<extraTooltip>This creature is lost and confused, being separated from their queen.</extraTooltip>
				<minSeverity>1</minSeverity>
				<becomeVisible>true</becomeVisible>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>	
</Defs>

