<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<XenotypeDef>
		<defName>Hive_Xenotype</defName>
		<label>bio-humanoid</label>
		<description>A creature that resembles a human in many ways, differentiated by the fact that is is an imitation human, grown in a vat for a collective hivemind.</description>
		<inheritable>true</inheritable>
		<combatPowerFactor>0.4</combatPowerFactor>
		<iconPath>UI/Icons/Xenotypes/Baseliner</iconPath>
		<genes>
			<li>HiveHivemind</li>
		</genes>
		<!--Ensures random pawns won't generate with this-->
		<factionlessGenerationWeight>0</factionlessGenerationWeight>
	</XenotypeDef>
	<XenotypeDef>
		<defName>Hive_Proto_Xenotype</defName>
		<label>proto-humanoid</label>
		<description>An artificial imitation of a humanoid. Awkward and clumsy, this attempt is full of flaws, but its much better than nothing.</description>
		<inheritable>true</inheritable>
		<combatPowerFactor>0.4</combatPowerFactor>
		<iconPath>UI/Icons/Xenotypes/Baseliner</iconPath>
		<genes>
			<li>Immunity_Weak</li>
			<li>LowSleep</li>
			<li>Pain_Reduced</li>
			<li>Beauty_Ugly</li>
			<li>AptitudePoor_Social</li>
			<li>AptitudeTerrible_Intellectual</li>
			<li>HiveHivemind</li>
		</genes>
		<!--Ensures random pawns won't generate with this-->
		<factionlessGenerationWeight>0</factionlessGenerationWeight>
	</XenotypeDef>
	<XenotypeDef>
		<defName>Hive_MegaHulk_Xenotype</defName>
		<label>mega hulk</label>
		<description>A giant mass of muscles, grown in a vat for its immense strength, not very bright but hits like a truck.</description>
		<inheritable>true</inheritable>
		<combatPowerFactor>3</combatPowerFactor>
		<iconPath>UI/Icons/Xenotypes/Baseliner</iconPath>
		<genes>
			<li>KillThirst</li>
			<li>Unstoppable</li>
			<li>Pain_Reduced</li>
			<li>Learning_Slow</li>
			<li>AptitudePoor_Social</li>
			<li>AptitudeTerrible_Intellectual</li>
			<li>HiveHivemind</li>
		</genes>
		<!--Ensures random pawns won't generate with this-->
		<factionlessGenerationWeight>0</factionlessGenerationWeight>
	</XenotypeDef>
	<XenotypeDef>
		<defName>Hive_Boom_Xenotype</defName>
		<label>explodling</label>
		<description>A specialised hive human filled with volitile chemicals and ready to explode upon a moments notice.</description>
		<inheritable>true</inheritable>
		<combatPowerFactor>3</combatPowerFactor>
		<iconPath>UI/Icons/Xenotypes/Baseliner</iconPath>
		<genes>
			<li>Immunity_Weak</li>
			<li>LowSleep</li>
			<li>Pain_Reduced</li>
			<li>AptitudeTerrible_Intellectual</li>
			<li>HiveExplosive</li>
			<li>HiveHivemind</li>
		</genes>
		<!--Ensures random pawns won't generate with this-->
		<factionlessGenerationWeight>0</factionlessGenerationWeight>
	</XenotypeDef>
</Defs>