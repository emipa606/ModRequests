<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TraitDef>
		<defName>HivemindTrait</defName>
		<commonality>0.0001</commonality>
		<degreeDatas>
			<li>
				<label>Hivemind</label>
				<description>{PAWN_nameDef} is a member of a hivemind</description>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Transhumanist</li>
		</conflictingTraits>
	</TraitDef>
	
	
	<ThoughtDef>
		<defName>HivemindThought</defName>
		<workerClass>ThoughtWorker_AlwaysActive</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>HivemindTrait</li>
		</requiredTraits>
		<stages>
			<li>
				<label>in a Hivemind</label>
				<description>The Hive is Good. The Hive is Great. Long live the Queen.</description>
				<baseMoodEffect>30</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
</Defs>