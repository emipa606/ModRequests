<Defs>
    <RecipeDef ParentName="AISurgery_Base">
        <defName>AISurgery_InstallArmoredBionicHeart</defName>
        <label>install armor-plated bionic heart</label>
        <description>install an armor-plated bionic heart.</description>
        <jobString>Installing armor-plated bionic heart.</jobString>

        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>2</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>AIThings_ArmoredBionicHeart</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>

        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
            <thingDefs>
                <li>AIThings_ArmoredBionicHeart</li>
            </thingDefs>
        </fixedIngredientFilter>

        <appliedOnFixedBodyParts>
            <li>Heart</li>
        </appliedOnFixedBodyParts>

        <addsHediff>AIHediffs_ArmoredBionicHeart</addsHediff>
    </RecipeDef>

