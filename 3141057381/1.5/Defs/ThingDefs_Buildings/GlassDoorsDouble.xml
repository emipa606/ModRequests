<Defs>

    <!--========================= Double Laser Door (2x1) =============================-->

    <ThingDef ParentName="SD_GlassDoorDefault">
        <defName>SD_LaserDoorDouble</defName>
        <label>double laser door (2x1)</label>
        <size>(2, 1)</size>
        <designatorDropdown>SZ_GlassDoubleDoors</designatorDropdown>
        <uiIconPath>StevesDoors/Things/Building/DoorsDouble/Laser/SD_LaserDoorDouble_MenuIcon</uiIconPath>
        <statBases>
            <WorkToBuild>15000</WorkToBuild>
            <MaxHitPoints>750</MaxHitPoints>
            <Beauty>30</Beauty>
        </statBases>
        <costList Inherit="False">
            <Steel>20</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <placeWorkers>
            <li>PlaceWorker_MultiCellDoor</li>
        </placeWorkers>
        <building>
            <blueprintClass>Blueprint_Build</blueprintClass>
            <blueprintGraphicData>
                <texPath>StevesDoors/Things/Building/DoorsDouble/Laser/SD_GlassDoorLaserDouble_Blueprint</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(2, 2)</drawSize>
            </blueprintGraphicData>
            <doorTopGraphic>
                <texPath>StevesDoors/Things/Building/DoorBase/SD_Blank</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(1, 1)</drawSize>
            </doorTopGraphic>
            <doorSupportGraphic>
                <texPath>StevesDoors/Things/Building/DoorBase/SD_Blank</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(1, 1)</drawSize>
            </doorSupportGraphic>
        </building>
        <modExtensions Inherit="False">
            <li Class="StevesDoors.ImprovedDoorExtension">
                <isLaserDoor>true</isLaserDoor>
            </li>
        </modExtensions>
        <comps Inherit="False">
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>50</basePowerConsumption>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>3</glowRadius>
                <colorPickerEnabled>true</colorPickerEnabled>
            </li>
            <li Class="StevesDoors.CompProperties_ImprovedDoorsDouble">
                <extraDoorGraphics>
                    <li>
                        <texPath>StevesDoors/Things/Building/DoorsDouble/Laser/SD_GlassDoorLaserDoubleLeft</texPath>
					    <graphicClass>Graphic_Single</graphicClass>
                        <shaderType>MoteGlowDistorted</shaderType>
                        <shaderParameters>
                            <_DistortionTex>/Other/Ripples</_DistortionTex>
                            <_distortionScrollSpeed>0.0025</_distortionScrollSpeed>
                            <_distortionIntensity>0.0175</_distortionIntensity>
                        </shaderParameters>
                        <drawSize>(2, 2)</drawSize>
                        <shouldFade>true</shouldFade>
                        <fadeFactor>1</fadeFactor>
                        <xMoveAmount>2</xMoveAmount>
                        <isLeftSideGraphic>true</isLeftSideGraphic>
                    </li>
                    <li>
                        <texPath>StevesDoors/Things/Building/DoorsDouble/Laser/SD_GlassDoorLaserDoubleRight</texPath>
					    <graphicClass>Graphic_Single</graphicClass>
                        <shaderType>MoteGlowDistorted</shaderType>
                        <shaderParameters>
                            <_DistortionTex>/Other/Ripples</_DistortionTex>
                            <_distortionScrollSpeed>0.0025</_distortionScrollSpeed>
