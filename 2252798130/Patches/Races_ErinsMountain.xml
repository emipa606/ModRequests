<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Erin's Critters Animals -->

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Erin's Mountain Animals</li>
       </mods>
       <match Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "Snow_leopard"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_Wolf</leatherDef>
         </value>
       </match>
   </Operation>

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Erin's Mountain Animals</li>
       </mods>
       <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName = "Pika"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_SoftFur</leatherDef>
         </value>
       </match>
   </Operation>

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Erin's Mountain Animals</li>
       </mods>
       <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName = "Pallas_cat"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_SoftFur</leatherDef>
         </value>
       </match>
   </Operation>


</Patch>
