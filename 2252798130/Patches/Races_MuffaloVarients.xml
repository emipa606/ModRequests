<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Muffalant and Mamuffalo -->

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Muffalant (patched)</li>
    </mods>
    <match Class="PatchOperationReplace">
       <xpath>/Defs/ThingDef[defName = "Muffalant"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Bear</leatherDef>
      </value>
    </match>
</Operation>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Muffalant (patched)</li>
    </mods>
    <match Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName = "Leather_Muffalant"]</xpath>
    </match>
</Operation>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Mamuffalo</li>
    </mods>
    <match Class="PatchOperationReplace">
       <xpath>/Defs/ThingDef[defName = "Mamuffalo"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Elephant</leatherDef>
      </value>
    </match>
</Operation>

</Patch>
