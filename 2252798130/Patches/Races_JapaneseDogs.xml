<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Japanese Dogs -->


<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Japanese Dogs</li>
    </mods>
    <match Class="PatchOperationReplace">
       <xpath>/Defs/ThingDef[defName = "Poetik_Kai"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Wolf</leatherDef>
      </value>
    </match>
</Operation>

