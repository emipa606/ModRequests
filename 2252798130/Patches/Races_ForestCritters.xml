<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Forest Critters -->

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Forest Critters</li>
       </mods>
       <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName = "Redpanda"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_SoftFur</leatherDef>
         </value>
       </match>
   </Operation>

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Forest Critters</li>
       </mods>
       <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName = "beaver"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_LuxeFur</leatherDef>
         </value>
       </match>
   </Operation>

</Patch>
