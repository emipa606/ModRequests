      <li>
        <defName>Tough</defName>
        <chance>7</chance>
      </li>
      <li>
        <defName>Brawler</defName>
        <chance>20</chance>
      </li>
    </forcedTraits>
    <spawnCategories>
      <li>SkavenHireling</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>TraderRatMercenary</defName>
    <title>mercenary</title>
    <titleShort>mercenary</titleShort>
    <baseDescription>[PAWN_nameDef] is a sellsword.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Thin</bodyTypeFemale>
