<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!--===================== hireling =====================-->

  <AlienRace.BackstoryDef>
    <defName>TraderRatHireling</defName>
    <title>hireling</title>
    <titleShort>hireling</titleShort>
    <baseDescription>[PAWN_nameDef] offer their services for a price.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Thin</bodyTypeFemale>
    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Social</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Melee</defName>
        <amount>5</amount>
      </li>
    </skillGains>
    <forcedTraits>
      <li>
        <defName>Nimble</defName>
        <chance>12</chance>
      </li>
    </forcedTraits>
    <spawnCategories>
      <li>SkavenHireling</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>TraderRatGladiator</defName>
    <title>gladiator</title>
    <titleShort>gladiator</titleShort>
    <baseDescription>[PAWN_nameDef] is a former gladiator, now offering their services for whoever pays.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Thin</bodyTypeFemale>
    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Shooting</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Melee</defName>
        <amount>5</amount>
      </li>
    </skillGains>
    <forcedTraits>
      <li>
        <defName>Tough</defName>
        <chance>7</chance>
      </li>
      <li>
        <defName>Nimble</defName>
        <chance>7</chance>
      </li>
    </forcedTraits>
    <spawnCategories>
      <li>SkavenHireling</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>TraderRatBruiser</defName>
