<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>SkavenOgreBlade</defName>
    <label>rat ogre blade</label>
    <description>A large blad that can be affixed to a rat ogre.</description>
    <graphicData>
      <texPath>Things/Item/Health/HealthItemProsthetic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <thingCategories>
      <li>BodyPartsArtificial</li>
    </thingCategories>
    <costList>
      <Steel>75</Steel>
    </costList>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>15</Mass>
      <DeteriorationRate>4.0</DeteriorationRate>
    </statBases>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
      <researchPrerequisite>SkavenHeavyWeapon</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

