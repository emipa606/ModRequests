<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
    <defName>EshinFaction</defName>
    <label>Skaven traders</label>
    <description>Free standing clans of traders. These skaven tend to keep a neutral attitude compared to their kin in the Under-Empire.</description>
    <backstoryCategories>
      <li>SkavenClanrat</li>
      <li>SkavenSlave</li>
      <li>SkavenEducated</li>
      <li>SkavenHireling</li>
      <li>SkavenTrader</li>
      <li>SkavenStormvermin</li>
    </backstoryCategories>
    <settlementGenerationWeight>0.4</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <canMakeRandomly>true</canMakeRandomly>
    <homeIconPath>Things/World/EshinIcon</homeIconPath>
    <expandingIconTexture>Things/World/EshinIcon</expandingIconTexture>
    <leaderTitle>Clan leader</leaderTitle>
    <techLevel>Medieval</techLevel>
    <permanentEnemy>false</permanentEnemy>
    <fixedName>Clan traders</fixedName>
    <settlementNameMaker>NamerEshin</settlementNameMaker>
    <earliestRaidDays>1</earliestRaidDays>
    <startingGoodwill>
      <min>-10</min>
      <max>10</max>
    </startingGoodwill>
    <naturalColonyGoodwill>
      <min>-50</min>
      <max>50</max>
    </naturalColonyGoodwill>
    <hairTags>
      <li>Tribal</li>
    </hairTags>
    <allowedArrivalTemperatureRange>
      <min>-30</min>
      <max>40</max>
    </allowedArrivalTemperatureRange>
    <caravanTraderKinds>
      <li>Caravan_Skaven_BulkGoods</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Skaven_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Skaven_Standard</li>
    </baseTraderKinds>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <goodwillDailyGain>0.10</goodwillDailyGain>
    <goodwillDailyFall>0.40</goodwillDailyFall>
    <pawnGroupMakers>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <TraderSlaveRatMissile>7</TraderSlaveRatMissile>
          <TraderClanratLow>10</TraderClanratLow>
          <TraderClanratRanged>5</TraderClanratRanged>
          <TraderClanratHigh>4</TraderClanratHigh>
          <TraderClanratHighGun>1</TraderClanratHighGun>
          <RatOgreBladeEshin>1</RatOgreBladeEshin>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <TraderClanratTrader>1</TraderClanratTrader>
        </traders>
        <carriers>
          <Muffalo>1</Muffalo>
        </carriers>
        <guards>
          <TraderSlaveRatMissile>7</TraderSlaveRatMissile>
          <TraderClanratLow>10</TraderClanratLow>
          <TraderClanratRanged>5</TraderClanratRanged>
          <TraderClanratHigh>3</TraderClanratHigh>
          <TraderClanratHighGun>2</TraderClanratHighGun>
          <RatOgreBladeEshin>1</RatOgreBladeEshin>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <TraderSlaveRatMissile>7</TraderSlaveRatMissile>
          <TraderClanratLow>10</TraderClanratLow>
          <TraderClanratRanged>7</TraderClanratRanged>
          <TraderClanratHigh>5</TraderClanratHigh>
          <RatOgreBladeEshin>2</RatOgreBladeEshin>
          <TraderClanratHighGun>2</TraderClanratHighGun>
          <TraderClanratTrader>1</TraderClanratTrader>
        </options>
      </li>
      <li>
        <!-- Normal fights -->
        <kindDef>Combat</kindDef>
        <commonality>40</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <TraderSlaveRatMissile>7</TraderSlaveRatMissile>
          <TraderClanratLow>10</TraderClanratLow>
          <TraderClanratRanged>7</TraderClanratRanged>
          <TraderClanratHigh>5</TraderClanratHigh>
          <TraderClanratHighGun>2</TraderClanratHighGun>
          <RatOgreBladeEshin>1</RatOgreBladeEshin>
        </options>
      </li>
      <li>
        <!-- ranged only -->
        <kindDef>Combat</kindDef>
        <commonality>30</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <TraderSlaveRatMissile>7</TraderSlaveRatMissile>
          <TraderClanratRanged>10</TraderClanratRanged>
          <TraderClanratHighGun>2</TraderClanratHighGun>
          <TraderClanratTrader>1</TraderClanratTrader>
        </options>
      </li>
      <li>
        <!-- Elite -->
        <kindDef>Combat</kindDef>
        <commonality>20</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <TraderClanratRanged>7</TraderClanratRanged>
          <TraderClanratHigh>5</TraderClanratHigh>
          <TraderClanratHighGun>2</TraderClanratHighGun>
          <RatOgreBladeEshin>3</RatOgreBladeEshin>
          <TraderClanratTrader>1</TraderClanratTrader>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>

</Defs>