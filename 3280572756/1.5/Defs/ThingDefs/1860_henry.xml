<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Henry 1860 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1860_henry</defName>
    <label>Henry 1860</label>
    <description>The first in a long line of rifles that will go on to become the iconic weapons of the Wild West. With 15 rounds in the tube magazine, it was the gun described as "Load it on Sunday and shoot all week."</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/henry1860</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>0.95</warmupTime>
        <range>24</range>
        <soundCast>Shot_winchesters</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>EarlyWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>

</Defs>