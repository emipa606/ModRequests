<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Sawn Off Coach Gun ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_sawn_off_shotgun</defName>
    <label>Sawn Off Shotgun</label>
    <description>The simplest of designs often stand the test of time for their reliabilty. This cut down double barrel is used for more discreet and personal encounters with thoughs you with to do onto.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/sawn_off_shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>2.1</RangedWeapon_Cooldown>
    </statBases>
     <costList>
	  <Steel>45</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Shotgun</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>12</range>
        <soundCast>Shot_doublebarrel</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
	 </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
      <li>ShortShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>MiddleWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>