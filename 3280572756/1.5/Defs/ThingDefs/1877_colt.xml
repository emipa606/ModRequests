<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Colt Model 1877 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1877_colt</defName>
    <label>Colt Model 1877</label>
    <description>This low profile revolver, allowed for a faster rate of fire with it's double action system as compared to it's larger single action brother. Good for situations that required a fast draw, and an even faster shot.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/colt_1877</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
   <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>35</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
	  <WoodLog>5</WoodLog>
    </costList>
    <recipeMaker>
      <researchPrerequisite>MiddleWestResearch</researchPrerequisite>
    </recipeMaker>    
     <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>0.2</warmupTime>
        <range>14</range>
        <soundCast>Shot_doubleaction</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>Revolver</li>      
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>