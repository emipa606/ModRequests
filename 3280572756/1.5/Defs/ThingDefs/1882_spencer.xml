<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Spencer Model 1882 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1882_spencer</defName>
    <label>Spencer Model 1882</label>
    <description>One of the first successfull pump action shotguns to be produced. It combines power, rate of fire, and capacity all in one.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/spencer_model_1882</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.57</AccuracyMedium>
      <AccuracyLong>0.44</AccuracyLong>
      <RangedWeapon_Cooldown>1.50</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <WoodLog>10</WoodLog>
	  <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Shotgun</defaultProjectile>
        <warmupTime>0.65</warmupTime>
        <range>17</range>
        <soundCast>Shot_spencershotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
	 </li>
    </verbs>
    <weaponTags>
	  <li>SimpleGun</li>
	  <li>ShortShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>LateWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>