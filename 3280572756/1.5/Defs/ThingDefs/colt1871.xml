<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Colt 1871 Open Top ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1871_Colt</defName>
    <label>Colt 1871 Open Top</label>
    <description>A gun one step ahead of it's predecessors. The Colt Open Top revolver was designed from the ground up around metal cartridges which greatly eased the burden of reloading the gun.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/colt_1871</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.9</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>MiddleWestResearch</researchPrerequisite>
    </recipeMaker>    
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>20</range>
        <soundCast>Shot_singleaction</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>    
      <li>Revolver</li>      
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>