<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Winchester 1895 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_winchester_russian</defName>
    <label>Winchester 1895</label>
    <description>This lever gun finally strayed away from the tube magazine system. Instead adopting the increasingly popular top fed design. The ability to maintain a sight picture while shooting gives the gun an advantage on the field.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/winchester1895</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
     <statBases>
      <WorkToMake>12500</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>2.90</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>55</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_BoltActionRifle</defaultProjectile>
        <warmupTime>1.75</warmupTime>
        <range>34</range>
        <soundCast>Shot_heavylever</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
		<li>SimpleGun</li>
		<li>LongShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>TwilightWestResearch</researchPrerequisite>
    </recipeMaker>
     <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>