<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Colt Model 1892 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1892_colt</defName>
    <label>Colt Model 1892</label>
    <description>Double Action had existed before this point, but this revolver perfected it. With six shots of .38 Special, it allowed for faster firerate, and even faster reloading due to it's flip out cylinder system.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/colt_model_1892</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
     <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.05</AccuracyLong>
      <RangedWeapon_Cooldown>0.95</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>35</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
	  <WoodLog>5</WoodLog>
    </costList>
    <recipeMaker>
      <researchPrerequisite>TwilightWestResearch</researchPrerequisite>
    </recipeMaker>    
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>0.2</warmupTime>
        <range>12</range>
        <soundCast>Shot_doubleaction</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>Revolver</li>      
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>