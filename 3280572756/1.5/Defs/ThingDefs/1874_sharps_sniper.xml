<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Sharps 1874 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1874_sharps_sniper</defName>
    <label>Sharps 1874 Sharpshooter</label>
    <description>The 1874 Sharps, no doubt one of the most popular rifle for large game hunting, with a powerful cartridge, and heavy barrel. This rifle is accurate and deadly.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/1874_sharps_sniper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <Mass>4.40</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>3.65</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>85</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <WoodLog>15</WoodLog>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MuffaloBullet</defaultProjectile>
        <warmupTime>2.65</warmupTime>
        <range>45</range>
        <soundCast>Shot_singleshotrifles</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
	  <li>LongShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>AdvancedAttachmentResearch</researchPrerequisite>
    </recipeMaker>
     <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>