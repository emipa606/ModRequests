<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== LeMat Revolver ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_LeMatRevolver</defName>
    <label>LeMat Revolver</label>
    <description>Truly a force multiplier on the field. The lemat provided 9 .42 caliber shots and a 20 gauge shot. No doubt worth their weight in gold.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/lemat_revolver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
   <statBases>
      <WorkToMake>8000</WorkToMake>
      <Mass>1.5</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>1.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
	  <researchPrerequisite>EarlyWestResearch</researchPrerequisite>
    </recipeMaker>    
     <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>20.0</range>
        <soundCast>Shot_lemat</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>  
      <li>Revolver</li>      
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>