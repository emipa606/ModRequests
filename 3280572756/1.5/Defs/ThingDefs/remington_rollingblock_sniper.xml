<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Remington Rolling Block ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_remington_rolling_block_sniper</defName>
    <label>Remington Rolling Block Sniper</label>
    <description>For long distance shots, there's nowhere else to look than the Rolling Block. The long barrel, and large round provide the reach to hit just about anything.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/remington_rolling_block_sniper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>4.40</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>3.55</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <WoodLog>15</WoodLog>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MuffaloBullet</defaultProjectile>
        <warmupTime>2.55</warmupTime>
        <range>45</range>
        <soundCast>Shot_singleshotrifles</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
	  <li>LongShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>AdvancedAttachmentResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>