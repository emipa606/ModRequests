<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Aston Model 1842 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1842_Aston</defName>
    <label>Aston Model 1842</label>
    <description>A significant step up from a flint lock design, the percussion cap system allowed for more reliable and quicker fire under pressure.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/model_1842</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>2.8</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_FlintBall</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>20</range>
        <soundCast>Shot_caplock</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
	  <li>SimpleGun</li> 
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>EarlyWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
   <ThingDef ParentName="BaseBullet">
    <defName>Bullet_FlintBall</defName>
    <label>FlintBall</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <stoppingPower>4</stoppingPower>
      <armorPenetrationBase>0.16</armorPenetrationBase>
      <speed>65</speed>
    </projectile>
  </ThingDef>

</Defs>