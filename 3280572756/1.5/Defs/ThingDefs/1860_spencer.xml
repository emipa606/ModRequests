<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Spencer Model 1860 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1860_spencer</defName>
    <label>Spencer Model 1860</label>
    <description>One of the first repeaters. Firing a rimfire cartridge with some punch behind it, and 7 rounds in the tube, compared to it's ball and cap predecessor, it was an exponential boost in fire power.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/spencer_1860</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>4.05</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>1.15</warmupTime>
        <range>34</range>
        <soundCast>Shot_winchesters</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>EarlyWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>

</Defs>