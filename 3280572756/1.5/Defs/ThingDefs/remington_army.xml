<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Remington Model 1858 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_remington_army</defName>
    <label>Remington Model 1858</label>
    <description>Fast, reliable, and effective. These things define this iconic firearm. The 1858 provided a substantial advantage to those who wielded it.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/remington_1858</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>EarlyWestResearch</researchPrerequisite>
    </recipeMaker>    
   <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>15</range>
        <soundCast>Shot_singleactionblackpowder</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>    
      <li>Revolver</li>      
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>