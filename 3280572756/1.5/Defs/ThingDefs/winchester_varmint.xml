<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Winchester 1890 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_winchester_varmint</defName>
    <label>Winchester 1890</label>
    <description>The perfect rifle for small game hunting, or just plinking. With a pump action design and a 16 round tube magazine, it's a fun gun to shoot and train with.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/winchester1890</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
     <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.25</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>0.50</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
       <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Varmit_Bullet</defaultProjectile>
        <warmupTime>0.75</warmupTime>
        <range>25</range>
        <soundCast>Shot_Winchester_1890</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
	  <li>SimpleGun</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>LateWestResearch</researchPrerequisite>
    </recipeMaker>
   <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Varmit_Bullet</defName>
    <label>varmit bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>4</damageAmountBase>
      <speed>63</speed>
    </projectile>
   </ThingDef>
   
</Defs>