<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Remington Rolling Block ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1871_remington</defName>
    <label>Remington Model 1871</label>
    <description>This interesting little piece seems like a cut down version of it's older brother the Rolling Block, but make no mistake, this single shot pistol packs quite a punch in a compact and light package.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/remington_model_1871</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>2.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>35</Steel>
      <WoodLog>15</WoodLog>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_LargePistolBullet</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>25</range>
        <soundCast>Shot_remington1871</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
	  <li>SimpleGun</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>MiddleWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_LargePistolBullet</defName>
    <label>LargePistolBullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>16</damageAmountBase>
      <stoppingPower>3</stoppingPower>
      <armorPenetrationBase>0.16</armorPenetrationBase>
      <speed>75</speed>
    </projectile>
  </ThingDef>

</Defs>