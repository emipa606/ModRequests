<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Browning Auto-5 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_browning_auto</defName>
    <label>Browning Auto-5</label>
    <description>An ingenious design, one of the first commercially successful semi-automatic shotguns. It provides a fast fire rate and packs a deadly punch.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/browning_auto_5</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>3.50</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>1.10</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>55</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <WoodLog>10</WoodLog>
	  <Chemfuel>10</Chemfuel>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Shotgun</defaultProjectile>
        <warmupTime>0.55</warmupTime>
        <range>14</range>
        <soundCast>Shot_browning</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
	 </li>
    </verbs>
    <weaponTags>
	  <li>SimpleGun</li>
      <li>ShortShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>TwilightWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>