<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Colt 1884 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1884_colt</defName>
    <label>Colt 1884 Lightning</label>
    <description>This unique design was a direct challenge to the legendary lever actions of the day. High capacity, high rate of fire, this pump-action rifle does all of it.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/colt1884</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>1.1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <WoodLog>10</WoodLog>
	  <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>0.85</warmupTime>
        <range>16</range>
        <soundCast>Shot_Colt_1884</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
	  <li>SimpleGun</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>LateWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>

</Defs>