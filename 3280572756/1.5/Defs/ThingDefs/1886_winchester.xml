<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Winchester 1886 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1886_winchester</defName>
    <label>Winchester 1886</label>
    <description>A stronger action in lever actions was needed to expand to more powerful cartridges. The 1886 was the answer to this problem, capable of handling 45-70, it became a sought after rifle.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/winchester1886</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>2.50</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MuffaloBullet</defaultProjectile>
        <warmupTime>1.55</warmupTime>
        <range>34</range>
        <soundCast>Shot_heavywinchesters</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	 <weaponTags>
	   <li>SimpleGun</li>
	   <li>LongShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>LateWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>