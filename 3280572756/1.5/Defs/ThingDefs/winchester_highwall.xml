<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Winchester 1885 Highwall ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_winchester_highwall</defName>
    <label>Winchester 1885 Highwall</label>
    <description>The Highwall. Chambered in a round that can down an elephant, this rifle is suitable for all your big hunting needs. Just make the one shot count.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/winchester1885</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
     <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.85</AccuracyLong>
      <RangedWeapon_Cooldown>3.45</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <WoodLog>15</WoodLog>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MuffaloBullet</defaultProjectile>
        <warmupTime>2.45</warmupTime>
        <range>37</range>
        <soundCast>Shot_singleshotrifles</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
	  <li>LongShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>LateWestResearch</researchPrerequisite>
    </recipeMaker>
   <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_MuffaloBullet</defName>
    <label>MuffaloBullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>24</damageAmountBase>
      <stoppingPower>4</stoppingPower>
      <armorPenetrationBase>0.22</armorPenetrationBase>
      <speed>95</speed>
    </projectile>
  </ThingDef>

</Defs>