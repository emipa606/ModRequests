<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Colt 1847 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1847_colt</defName>
    <label>Colt 1847 Walker</label>
    <description>With six shots, powerful enough to stop a bison, and all being carried in one hand. The Colt Walker is beloved by those who wield it and dreaded by those who are at the end of it's barrel.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/colt_1847_walker</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>1.6</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>1.9</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>55</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>EarlyWestResearch</researchPrerequisite>
    </recipeMaker>    
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_FlintBall</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>22</range>
        <soundCast>Shot_singleactionblackpowder</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>    
      <li>Revolver</li>      
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>