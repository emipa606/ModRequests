<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Winchester M1876 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1876_winchester</defName>
    <label>Winchester 1876</label>
    <description>The gun that one the wests' older brother. Chambered in 40-60, it combines power, speed, and capacity all in one.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/winchester1876</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>2.90</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_BoltActionRifle</defaultProjectile>
        <warmupTime>1.75</warmupTime>
        <range>34</range>
        <soundCast>Shot_heavywinchesters</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	 <weaponTags>
	  <li>SimpleGun</li>
	  <li>LongShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>MiddleWestResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>