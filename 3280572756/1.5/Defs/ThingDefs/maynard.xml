<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Maynard Carbine ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_Maynard_Carbine</defName>
    <label>Maynard Carbine</label>
    <description>The Maynard Carbine had a revolutionary design, not so much the rifle itself but the ammo that came a long with it. The 50 Caliber projectile was contained in a metallic cartridge which improved the handling of the weapon significantly compared to other breach loading rifles of the era which still used paper cartridges.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/maynard</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.70</AccuracyLong>
      <RangedWeapon_Cooldown>2.65</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <WoodLog>25</WoodLog>
	  <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MuffaloBullet</defaultProjectile>
        <warmupTime>1.45</warmupTime>
        <range>37</range>
        <soundCast>Shot_springfield1873</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
	  <li>SimpleGun</li> 
	  <li>LongShots</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>MiddleWestResearch</researchPrerequisite>
    </recipeMaker>
        <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>