<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- ==================== Krag–Jørgensen ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_kragjorgensen_sniper</defName>
    <label>Krag–Jørgensen Sniper</label>
    <description>An interesting side loading design, and an effective one. With a fast a smooth bolt and a powerful rifle round, this rifle would have it's uses just about anywhere.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/kragjørgensen_sniper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>4.45</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>2.80</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>65</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
     <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_BoltActionRifle</defaultProjectile>
        <warmupTime>2.15</warmupTime>
        <range>45</range>
        <soundCast>Shot_krag</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
		<li>LongShots</li>
		<li>SimpleGun</li> 
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>AdvancedAttachmentResearch</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>