<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Remington Model 1875 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_1875_Remington</defName>
    <label>Remington Model 1875</label>
    <description>>As the demand to have both your trusty lever action as well as your revolver in the same cartridge had increased, this revolver was the solution. Now any gunslinger wouldn't have to worry about the different ammo on their belts.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/remington_1875</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.3, 1.3)</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.9</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>MiddleWestResearch</researchPrerequisite>
    </recipeMaker>    
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>20</range>
        <soundCast>Shot_singleaction</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>    
      <li>Revolver</li>      
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>