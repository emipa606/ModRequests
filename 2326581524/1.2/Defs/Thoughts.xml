<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Longer Memories -->
	
	<ThoughtDef>
		<defName>VMDT_AteWithoutTable</defName>
		<durationDays>1.5</durationDays>
		<stackLimit>3</stackLimit>
		<stackedEffectMultiplier>.83</stackedEffectMultiplier>
		<stages>
		  <li>
			<label>ate without table</label>
			<description>I had to eat a meal off the ground. Can't we get a table around here?</description>
			<baseMoodEffect>-3</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>VMDT_AteLavishMeal</defName>
		<durationDays>1</durationDays>
		<stackLimit>2</stackLimit>
		<stackedEffectMultiplier>0</stackedEffectMultiplier>
		<stages>
		  <li>
			<label>ate lavish meal</label>
			<description>That lavish meal was amazing. It nourished my body and my soul.</description>
			<baseMoodEffect>12</baseMoodEffect>
		  </li>
		</stages>
		<nextThought>VMDT_AteLavishMeal_II</nextThought>
	</ThoughtDef>

	<ThoughtDef>
		<defName>VMDT_AteLavishMeal_II</defName>
		<durationDays>.5</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
		  <li>
			<label>ate lavish meal II</label>
			<description>That lavish meal was amazing. I can still remember the flavors when I concentrate.</description>
			<baseMoodEffect>8</baseMoodEffect>
		  </li>
		</stages>
		<nextThought>VMDT_AteLavishMeal_III</nextThought>
	</ThoughtDef>	
	
	<ThoughtDef>
		<defName>VMDT_AteLavishMeal_III</defName>
		<durationDays>.5</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
		  <li>
			<label>ate lavish meal III</label>
			<description>I can barely remember the taste of that lavish meal, I hope I get another soon.</description>
			<baseMoodEffect>4</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>	
	
	<!-- Freshly Cooked Thoughts -->
	
	<ThoughtDef>
    <defName>VMDT_FrozenLeftovers</defName>
    <durationDays>1</durationDays>
    <stackLimit>2</stackLimit>
    <stages>
      <li>
        <label>ate frozen leftovers</label>
        <description>I had to eat a freezer-burned meal.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
	
	<ThoughtDef>
    <defName>VMDT_Leftovers</defName>
    <durationDays>1</durationDays>
    <stackLimit>2</stackLimit>
    <stages>
      <li>
        <label>ate leftovers</label>
        <description>Leftovers again, I suppose it's better than nothing.</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

	<ThoughtDef>
    <defName>VMDT_HotMeal</defName>
    <durationDays>1</durationDays>
    <stackLimit>2</stackLimit>
    <stages>
      <li>
        <label>ate hot meal</label>
        <description>I had a meal that was freshly cooked.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
	
	<!-- Cooking Quality Thoughts -->
	<ThoughtDef>
		<defName>VMDT_SmallPortions</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate small meal</label>
				<description>My meal had tiny portions. I wonder if the cook had to throw some of it away?</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef> 
	
	<ThoughtDef>
		<defName>VMDT_LargePortions</defName> <!-- has Hediff -->
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>overate</label>
				<description>That meal was too big! I'm stuffed. A nap sure would be nice.</description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef> 
	
	<ThoughtDef>
		<defName>VMDT_Overseasoned</defName>
		<durationDays>3</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate overseasoned meal</label>
				<description>My meal had too much seasoning. I can't get the taste out of my  mouth.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef> 

	<ThoughtDef>
		<defName>VMDT_Underseasoned</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
			<label>ate underseasoned meal</label>
			<description>My meal looked better than it tasted. Don't we have any seasoning?</description>
			<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef> 
    
	<ThoughtDef>
		<defName>VMDT_Overcooked</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
		  <li>
			<label>ate overcooked meal</label>
			<description>My meal was a bit too tough and dry for my tastes.</description>
			<baseMoodEffect>-2</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef> 
	
	<ThoughtDef>
		<defName>VMDT_Undercooked</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
		  <li>
			<label>ate undercooked meal</label>
			<description>My meal needed to be cooked longer. It was rubbery and didn't taste right.</description>
			<baseMoodEffect>-3</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef> 
	
	<ThoughtDef>
		<defName>VMDT_Unforgettable</defName>
		<durationDays>3</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
		  <li>
			<label>ate weird flavor</label>
			<description>That meal tasted funny. I don't know what was wrong with it, but I can't get the taste out of my mouth.</description>
			<baseMoodEffect>-4</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef> 
	
	<ThoughtDef>
		<defName>VMDT_Burnt</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
		  <li>
			<label>ate burnt meal</label>
			<description>My meal wasn't just charred, it was burnt. I could barely stomach eating it.</description>
			<baseMoodEffect>-5</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef> 
	
</Defs>
