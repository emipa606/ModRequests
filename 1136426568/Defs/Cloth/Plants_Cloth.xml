<?xml version="1.0" encoding="utf-8" ?>
<Plants>

  <!--=========================== Production crops ==============================-->

  <ThingDef ParentName="PlantBase">
    <defName>PlantFlax</defName>
    <label>Flax plant</label>
    <description>Yields Flax, a basic plant fiber used to make cloth.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Flax/Flax</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible>
      <nutrition>0.20</nutrition>
    </ingestible>
    <plant>
			<fertilitySensitivity>0.4</fertilitySensitivity>
			<growDays>8</growDays>
			<dieIfLeafless>true</dieIfLeafless>
      <reproduces>false</reproduces>
      <fertilityMin>0.5</fertilityMin>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Flax</harvestedThingDef>
      <harvestYield>12</harvestYield>
      <sowTags>
        <li>Field</li>
      </sowTags>
      <topWindExposure>0.15</topWindExposure>
      <immatureGraphicPath>Things/Plant/Flax/unFlax</immatureGraphicPath>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

