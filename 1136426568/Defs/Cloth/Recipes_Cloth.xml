	<RecipeDef>
    <defName>WeavingFlax</defName>
    <label>Weave Flax.</label>
    <description>Weave Flax.</description>
    <jobString>Weave Flax.</jobString>
    <workAmount>600</workAmount>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>Loom</li>
      </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Flax</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
    </ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>Flax</li>
          </thingDefs>
		</fixedIngredientFilter>
    <products>
      <Flax_cloth>8</Flax_cloth>
    </products>
  </RecipeDef>

