<?xml version="1.0" encoding="utf-8"?>
<Plants>

  <ThingDef ParentName="PlantBase">
    <defName>Plantredflower</defName>
    <label>Red flower</label>
    <description>Beatiful red flower.</description>
		<statBases>
			<MaxHitPoints>30</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/redflower</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible>
			<nutrition>0.10</nutrition>
		</ingestible>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<reproduces>false</reproduces>
			<maxMeshCount>9</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<!-- 필요 재배스킬, 필요 연구, 토질민감도 -->
			<sowMinSkill>4</sowMinSkill>
			<sowResearchPrerequisites>
				<li>T_FlowerI</li>
			</sowResearchPrerequisites>
			<fertilitySensitivity>0.95</fertilitySensitivity>
			<!-- 수확작물, 수확량, 수확가능 지대, 성장기간 -->
			<harvestedThingDef>honey</harvestedThingDef> 
			<harvestYield>1</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Field</li>
				<li>Hydroponic</li>
			</sowTags>
			<growDays>5.5</growDays>
			<topWindExposure>0.15</topWindExposure>
			<visualSizeRange>
				<min>0.5</min>
				<max>1.2</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

