<?xml version="1.0" encoding="utf-8"?>
<Plants>

  <ThingDef ParentName="PlantBase">
    <defName>Plantsugarcane</defName>
    <label>sugar cane</label>
    <description>sugar cane</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Plantsugarcane</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible>
			<nutrition>0.10</nutrition>
		</ingestible>
		<plant>
			<maxMeshCount>9</maxMeshCount>
			<dieIfLeafless>true</dieIfLeafless>
			<reproduces>false</reproduces>
			<harvestTag>Standard</harvestTag>
			<!-- 필요 재배스킬, 필요 연구, 토질민감도 -->
			<sowMinSkill>4</sowMinSkill>
			<sowResearchPrerequisites>
				<li>T_SpiceI</li>
			</sowResearchPrerequisites>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<!-- 수확작물, 수확량, 수확가능 지대, 성장기간 -->
			<harvestedThingDef>sugarcane</harvestedThingDef> 
			<harvestYield>12</harvestYield>
			<sowTags>
				<li>Field</li>
				<li>Hydroponic</li>
			</sowTags>
			<growDays>8</growDays>
			<topWindExposure>0.15</topWindExposure>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.1</max>
			</visualSizeRange>
		</plant>
	</ThingDef>


