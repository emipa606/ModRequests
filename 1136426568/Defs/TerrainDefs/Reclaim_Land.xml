    <RenderPrecedence>340</RenderPrecedence>
    <PathCost>2</PathCost>
	<CostList>
		<Waterbowl>3</Waterbowl>
		<compost>1</compost>
	</CostList>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
