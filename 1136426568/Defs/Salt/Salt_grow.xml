<?xml version="1.0" encoding="utf-8"?>
<Plants>

  <ThingDef ParentName="PlantBase">
    <defName>PlantSalt</defName>
    <label>Sea salt</label>
    <description>Sea salt is the way that can gain salt from ocean.</description>
		<statBases>
			<MaxHitPoints>40</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/raw_salt</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible>
			<nutrition>0.10</nutrition>
		</ingestible>
		<plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>false</dieIfLeafless>
			<reproduces>false</reproduces>
			<maxMeshCount>1</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>Raw_Salt</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<sowWork>700</sowWork>
			<harvestWork>1000</harvestWork>
			<sowTags>
				<li>Salt_Field</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>3.5</growDays>
			<visualSizeRange>
				<min>0.1</min>
				<max>0.9</max>
			</visualSizeRange>
		</plant>
	</ThingDef>	
  

</Plants>