<?xml version="1.0" encoding="utf-8"?>
<Defs>

<!-- 1티어 FruitRaw-->

  <ThingDef ParentName="Farmproduct">
    <defName>Raw_Salt</defName>
    <label>Raw Salt</label>
    <description>Unrefine Salt. To use this, you need to refine this.</description>
    <graphicData>
      <texPath>Things/Items/raw_salt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>4</Mass>
      <MarketValue>2</MarketValue>
	  <DeteriorationRate>50</DeteriorationRate>
    </statBases>
    <stackLimit>40</stackLimit>
	<ingestible>
	    <foodType>None</foodType>
	    <preferability>DesperateOnly</preferability>
		<tasteThought>AteKibble</tasteThought>
        <nutrition>0.05</nutrition>
        <ingestEffect>EatVegetarian</ingestEffect>
        <ingestSound>Meal_Eat</ingestSound>
    </ingestible>
    <thingCategories>
      <li>SpiceRaw</li>
    </thingCategories>
    <tickerType>Rare</tickerType>   
  </ThingDef>

  <ThingDef ParentName="Farmproduct">
    <defName>Salt</defName>
    <label>Salt</label>
    <description>Refine Salt. You can use this on cooking.</description>
    <graphicData>
      <texPath>Things/Items/Salt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>1</Mass>
      <MarketValue>1</MarketValue>
	  <DeteriorationRate>50</DeteriorationRate>
    </statBases>
    <stackLimit>75</stackLimit>
	<ingestible>
	    <foodType>None</foodType>
	    <preferability>DesperateOnly</preferability>
		<tasteThought>AteKibble</tasteThought>
        <nutrition>0.02</nutrition>
        <ingestEffect>EatVegetarian</ingestEffect>
        <ingestSound>Meal_Eat</ingestSound>
    </ingestible>
    <thingCategories>
      <li>SpiceRaw</li>
    </thingCategories>
    <tickerType>Rare</tickerType>   
  </ThingDef>

</Defs>