<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

   <RecipeDef>
    <defName>MakeRawMead</defName>
    <label>Make Raw Mead x10</label>
    <description>Make Raw Mead x10</description>
    <jobString>Making Raw Mead.</jobString>
    <workSpeedStat>BrewingSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <workAmount>1000</workAmount>
       <soundWorking>Recipe_CookMeal</soundWorking>
       <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
			<li>honey</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
			<li>Waterbowl</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
			<li>Waterbowl</li>
			<li>honey</li>			
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RawMead>10</RawMead>
    </products>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>3</minLevel>
			</li>
		</skillRequirements>
    <workSkill>Cooking</workSkill>
	<recipeUsers>
        <li>Brewery</li>
    </recipeUsers>
  </RecipeDef>
 
