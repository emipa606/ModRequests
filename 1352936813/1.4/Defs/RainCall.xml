<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ArtifactBase">
    <defName>RainCallerItem</defName>
    <label>rain caller</label>
    <thingClass>ThingWithComps</thingClass>
    <description>One-use device that can call rain.</description>
    <graphicData>
      <texPath>Things/Item/raincalldevice</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>1</stackLimit>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>100</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.5</Mass>
      <Flammability>0</Flammability>
	  <DeteriorationRate>0</DeteriorationRate>
	</statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <drawGUIOverlay>false</drawGUIOverlay>
    <techLevel>Spacer</techLevel>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
    <comps>
      <li Class="CompProperties_UseEffectArtifact">
        <compClass>RainCaller.Comp_RainCall</compClass>
      </li>
      <li Class="CompProperties_UseEffectArtifact">
        <sound>PsychicInsanityLanceCast</sound>
      </li>
    </comps>
	<costList>
      <Steel>50</Steel>
	  <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
	<generateCommonality>0</generateCommonality>
  </ThingDef>
  
</Defs>
