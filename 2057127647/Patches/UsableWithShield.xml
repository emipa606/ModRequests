<!--
		Patches in the "UsableWithShield" in the weaponTags node for Pila. This allows the pila to be used while also weilding a shield.
		To add in more exceptions, copy and paste the Operation below. Then replace the defName.
-->

<!--	
		<Operation Class="PatchOperationAdd">
			<xpath>*/ThingDef[defName = "INSERT_WEAPON"]/weaponTags</xpath>
			<value>
				<li>UsableWithShield</li>
			</value>
		</Operation>
-->
		
<Patch>
		<Operation Class="PatchOperationAdd">
			<xpath>*/ThingDef[defName = "Pila"]/weaponTags</xpath>
			<value>
				<li>UsableWithShield</li>
			</value>
		</Operation>		
</Patch>