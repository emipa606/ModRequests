<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <StatDef>
    <defName>BlockMax</defName>
    <label>Shield max block</label>
    <description>The maximum amount of damage the shield can block at once.</description>
    <category>Apparel</category>
    <minValue>0</minValue>
    <toStringStyle>PercentZero</toStringStyle>
    <showIfUndefined>false</showIfUndefined>
    <parts>
      <li Class="StatPart_Quality">
        <factorAwful>0.6</factorAwful>
        <factorPoor>0.8</factorPoor>
        <factorNormal>1</factorNormal>
        <factorGood>1.2</factorGood>
        <factorExcellent>1.4</factorExcellent>
        <factorMasterwork>1.7</factorMasterwork>
        <factorLegendary>2.1</factorLegendary>
      </li>
    </parts>
  </StatDef>  
  
  
  <StatDef>
    <defName>BlockChanceMelee</defName>
    <label>Blocking Chance Multipliers</label>
    <description>A chance to block melee blow.</description>
    <category>Apparel</category>
    <minValue>0.5</minValue>
    <toStringStyle>PercentZero</toStringStyle>
    <showIfUndefined>false</showIfUndefined>
    <parts>
      <li Class="StatPart_Quality">
        <factorAwful>0.6</factorAwful>
        <factorPoor>0.8</factorPoor>
        <factorNormal>1</factorNormal>
        <factorGood>1.2</factorGood>
        <factorExcellent>1.4</factorExcellent>
        <factorMasterwork>1.7</factorMasterwork>
        <factorLegendary>2.1</factorLegendary>
      </li>
    </parts>
  </StatDef>

  <StatDef>
    <defName>StaminaRechargeRate</defName>
    <label>Stamina recharge rate</label>
    <description>The rate at which stamina is restored. Affected by manipulation.</description>
    <category>Apparel</category>
    <minValue>0</minValue>
    <defaultBaseValue>0.10</defaultBaseValue>
    <toStringStyle>PercentZero</toStringStyle>
    <formatString>{0}/s</formatString>
    <showIfUndefined>false</showIfUndefined>
  </StatDef>
  
  
    <StatDef>
    <defName>TimeToRaise</defName>
    <label>Time to Raise</label>
    <description>How many seconds have to pass untill shield is able to block damage again.</description>
    <category>Apparel</category>
    <minValue>3</minValue>
    <defaultBaseValue>5</defaultBaseValue>
    <toStringStyle>PercentZero</toStringStyle>
    <formatString>{0}s</formatString>
    <showIfUndefined>false</showIfUndefined>
  </StatDef>
  
  
  
  
  
  
  
</Defs>