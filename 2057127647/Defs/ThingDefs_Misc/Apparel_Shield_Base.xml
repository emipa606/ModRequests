<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="ShieldBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<techLevel>Medieval</techLevel>
    <graphicData>
		<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
		<MaxHitPoints>200</MaxHitPoints>
		<Flammability>1</Flammability>
		<DeteriorationRate>2</DeteriorationRate>
		<Beauty>-3</Beauty>
		<EquipDelay>0.0</EquipDelay>
		<BlockChanceMelee>1</BlockChanceMelee>
	</statBases>
	<altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Normal</tickerType>
    <comps>
		<li Class="CompProperties_Forbiddable"/>
		<li><compClass>CompColorable</compClass></li>
	  <li><compClass>CompQuality</compClass></li>
    </comps>
	<thingCategories>
		<li>Apparel</li>
	</thingCategories>
	<apparel>
		<careIfWornByCorpse>false</careIfWornByCorpse>
		<bodyPartGroups>
			<li>Arms</li>
			<li>Waist</li>
		</bodyPartGroups>
		<layers>
			<li>Accessory</li>
			<li>Belt</li>
		</layers>
		<defaultOutfitTags>
			<li>Soldier</li>
		</defaultOutfitTags>
	</apparel>
	<recipeMaker>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
	</recipeMaker>
  </ThingDef>

	<ThingDef Name="ShieldNeolithic" ParentName="ShieldBase" Abstract="True">
		<techLevel>Neolithic</techLevel>
		<apparel>
			<tags>
				<li>Neolithic</li>
			</tags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
				<li>FueledSmithy</li>
				<li>ElectricSmithy</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<categories>
					<li>Root</li>
				</categories>
			</defaultIngredientFilter>
		</recipeMaker>
	</ThingDef>

	<ThingDef Name="ShieldMedieval" ParentName="ShieldBase" Abstract="True">
		<techLevel>Medieval</techLevel>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<apparel>
			<tags>
				<li>Medieval</li>
			</tags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>FueledSmithy</li>
				<li>ElectricSmithy</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<categories>
					<li>Root</li>
				</categories>
				<disallowedThingDefs>
					<li>Gold</li>
					<li>Silver</li>
					<li>Uranium</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
	</ThingDef>

	<ThingDef Name="ShieldIndustrial" ParentName="ShieldBase" Abstract="True">
		<techLevel>Industrial</techLevel>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<apparel>
			<tags>
				<li>Industrial</li>
			</tags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>FueledSmithy</li>
				<li>ElectricSmithy</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<categories>
					<li>Root</li>
				</categories>
				<disallowedThingDefs>
					<li>Gold</li>
					<li>Silver</li>
					<li>Uranium</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
	</ThingDef>
	
</Defs>