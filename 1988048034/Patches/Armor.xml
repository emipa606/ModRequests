<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
  
  <Operation Class="PatchOperationFindMod">
	<mods>
		<li>Animal Gear</li>
	</mods>
	
	<!-- If you DO have Animal Gear installed... -->
	
	<match Class="PatchOperationSequence">
	<success>Always</success>
	
	<operations>
	

		<li Class="PatchOperationAdd">
		<xpath>Defs</xpath>
		<value>
		
	<!-- PygmyBeefaloArmour  START  -->
	
	  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_PygmyBeefaloArmour</defName>
    <label>Pygmy Beefalo Armour</label>
    <description>Armor plates covering the body. Protects against gunfire and melee attacks.</description>
    <techLevel>Medieval</techLevel>
  <recipeMaker>
    <researchPrerequisite>PlateArmor</researchPrerequisite>
    <recipeUsers>
      <li>ElectricSmithy</li>
      <li>FueledSmithy</li>
    </recipeUsers>
  </recipeMaker>
    <graphicData>
      <texPath>PygmyBeefaloArmour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>5</Mass>
      <StuffEffectMultiplierArmor>0.75</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1.0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
    </equippedStatOffsets>
    <costStuffCount>260</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>UpperHead</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>PygmyBeefaloArmour</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>PygmyBeefalo</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
	
	<!-- END  -->
		
	
		</value>
		</li>

	</operations>
	
	</match>
  </Operation>
  
  
</Patch>