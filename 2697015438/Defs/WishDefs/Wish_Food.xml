	<wantSpecific>false</wantSpecific>
	<upsetPerDay>5</upsetPerDay>
	<progressStep>0.1</progressStep>
	<progressRemovePending>10</progressRemovePending>
    <traitFactor>
      <li>
		<trait>Gourmand</trait>
		<factor>1.3</factor>
	  </li>
      <li>
		<trait>Ascetic</trait>
		<factor>0</factor>
	  </li>
