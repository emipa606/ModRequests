<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■ AMETHYST ■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■--> 
  <ThingDef ParentName="CRYST_BaseFilth">
    <defName>CRYST_BLOOD_AMETHYST_DEF</defName>
  
    <label>amethyst granulate</label>
    <graphicData>
      <texPath>Filth/GranulateAmethyst</texPath>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>30</MaxHitPoints>
      <Flammability>0.4</Flammability>
      <Beauty>1</Beauty>
      <Cleanliness>-2</Cleanliness>
    </statBases>
    <pathCost>35</pathCost> 
    
    <filth>
      <disappearsInDays>25~45</disappearsInDays>
      <rainWashes>true</rainWashes>
      <cleaningWorkToReduceThickness>40</cleaningWorkToReduceThickness>
      <cleaningSound>Interact_CleanFilth_Dirt</cleaningSound>
      <canFilthAttach>false</canFilthAttach>
    </filth>
    
  </ThingDef>  
   
  <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■ CITRINE ■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■--> 
