<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Part heatlh is pumped by <baseHealthScale> x10 because thats what ties into the health/pain bar under pawn-->
  
    <!--■■■ FRONT BOTTOM ■■■-->
   <BodyPartGroupDef>
     <defName>GDCRYST_BODYGROUP_AmethystConceiverVentralLattice</defName>
     <label>ventral lattice</label>
     <listOrder>100</listOrder>
   </BodyPartGroupDef>
    <BodyPartDef>
      <defName>GDCRYST_BODYPART_AmethystConceiverVentralLattice</defName>
      <label>ventral lattice</label>
      <hitPoints>20</hitPoints>

      <alive>false</alive>
      <solid>true</solid>
      <bleedRate>0</bleedRate>
      <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
      
      <skinCovered>false</skinCovered>
      <canSuggestAmputation>true</canSuggestAmputation>
            
      <tags>
        <li>MovingLimbCore</li>
        <li>ManipulationLimbCore</li>
        <li>BreathingPathway</li>
        <li>EatingPathway</li>
      </tags>
    </BodyPartDef>
  
   <!--■■■ BACK BOTTOM ■■■-->   
  <BodyPartGroupDef>
    <defName>GDCRYST_BODYGROUP_AmethystConceiverDorsalLattice</defName>
    <label>dorsal lattice</label>
    <listOrder>100</listOrder>
  </BodyPartGroupDef>
   <BodyPartDef>
     <defName>GDCRYST_BODYPART_AmethystConceiverDorsalLattice</defName>
     <label>dorsal lattice</label>
     <hitPoints>20</hitPoints>
     
     <alive>false</alive>
     <solid>true</solid>
     <bleedRate>0</bleedRate>
     <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
     
     <skinCovered>false</skinCovered>
     <canSuggestAmputation>true</canSuggestAmputation>
     
     <tags>
       <li>MovingLimbCore</li>
       <li>ManipulationLimbCore</li>
       <li>BreathingPathway</li>
       <li>EatingPathway</li>
     </tags>
   </BodyPartDef>
   
  <!--■■■ SPIRE ■■■-->
  <BodyPartGroupDef>
    <defName>GDCRYST_BODYGROUP_AmethystConceiverSpire</defName>
    <label>lower segments</label>
    <listOrder>190</listOrder>
  </BodyPartGroupDef>
  <BodyPartDef>
    <defName>GDCRYST_BODYPART_AmethystConceiverSpire</defName>
    <label>Spire</label>
    <hitPoints>8</hitPoints>
    
    <alive>false</alive>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <bleedRate>0</bleedRate>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <canSuggestAmputation>true</canSuggestAmputation>
    
    <tags>
      <li>ManipulationLimbCore</li>
      <li>BreathingSource</li>
      <li>BreathingPathway</li>
      <li>EatingPathway</li>
    </tags>
    
    <spawnThingOnRemoved>Heart</spawnThingOnRemoved>
  </BodyPartDef>
  
  <!--■■■ NUCLEATION OVUM ■■■-->
  <BodyPartGroupDef>
    <defName>GDCRYST_BODYGROUP_AmethystConceiverNucleationOvum</defName>
    <label>nucleation oOvum</label>
    <listOrder>100</listOrder>
  </BodyPartGroupDef>
  <BodyPartDef>
    <defName>GDCRYST_BODYPART_AmethystConceiverNucleationOvum</defName>
    <label>nNucleation ovum</label>
    <hitPoints>6</hitPoints>
    
    <alive>false</alive>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <bleedRate>0</bleedRate>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <canSuggestAmputation>true</canSuggestAmputation>
    
    <frostbiteVulnerability>1</frostbiteVulnerability>
    
    <tags>
      <li>ConsciousnessSource</li>
      <li>BreathingSource</li>
      <li>BloodPumpingSource</li>
      <li>BloodFiltrationSource</li>
      <li>HearingSource</li>
      <li>MetabolismSource</li>
      <li>BreathingPathway</li>
      <li>EatingPathway</li>
      <li>TalkingPathway</li>
    </tags>
    
    <spawnThingOnRemoved>Heart</spawnThingOnRemoved>
  </BodyPartDef>

</Defs>
