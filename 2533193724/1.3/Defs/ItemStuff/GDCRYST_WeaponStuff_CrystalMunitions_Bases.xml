<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■ WEAPON BASES■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■
    ■■■■■■■■■■■■■■■■■■ MELEE ■■■■■■■■■■■■■■■■■■■■■■■-->
  <ThingDef Abstract="True" Name="GDCRYST_WEAPON_Base" ParentName="BaseWeapon">
     <graphicData>
      <onGroundRandomRotateAngle>180</onGroundRandomRotateAngle>
    </graphicData>
    
    <techLevel>Animal</techLevel>
    <weaponClasses>
      <li>Melee</li>
    </weaponClasses>
    <relicChance>1</relicChance>
    
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <costList>
      <Uranium>30</Uranium>
    </costList>
  
    <generateCommonality>0.05</generateCommonality>
    <weaponTags>
      <li>GDCRYST_TAG_WeaponLowTier</li>
      <li>GDCRYST_TAG_WeaponAll</li>
    </weaponTags>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>

    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
   <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Legendary</minQualityForArtistic>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
</ThingDef>
  
  <!--■■■■■■■■■■■■■■■■■■ "SWORD" BASES ■■■■■■■■■■■■■■■■■■■■■■■
  ■■■ LARGE ■■■-->
  <ThingDef Abstract="True" Name="GDCRYST_WEAPON_LargePiercerBase" ParentName="GDCRYST_WEAPON_Base">
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <weaponClasses>
      <li>MeleePiercer</li>
    </weaponClasses>
    
    <statBases >
      <WorkToMake>10000</WorkToMake>
      <Mass>350</Mass>
    </statBases>
   
    <equippedAngleOffset>-85</equippedAngleOffset>
    
    <weaponTags>
      <li>GDCRYST_TAGWEAPON_LargePiecer</li>
    </weaponTags>
  </ThingDef>
  <!--■■■ SMALL ■■■-->
  <ThingDef Abstract="True" Name="GDCRYST_WEAPON_SmallPiercerBase" ParentName="GDCRYST_WEAPON_LargePiercerBase"> 
    
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <Mass>100</Mass>
    </statBases>
    
    <equippedAngleOffset>-85</equippedAngleOffset>
    
    <weaponTags Inherit = "false">
      <li>GDCRYST_TAGWEAPON_SmallPiecer</li>
    </weaponTags>
  </ThingDef>
  
  <!--■■■■■■■■■■■■■■■■■■ "BLUNT" BASES ■■■■■■■■■■■■■■■■■■■■■■■
  ■■■ LARGE ■■■-->
  <ThingDef Abstract="True" Name="GDCRYST_WEAPON_LargeBluntBase" ParentName="GDCRYST_WEAPON_Base">
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <weaponClasses>
      <li>MeleeBlunt</li>
    </weaponClasses>
    
    <statBases >
      <WorkToMake>10000</WorkToMake>
      <Mass>350</Mass>
    </statBases>
     
    <equippedAngleOffset>-85</equippedAngleOffset>
    
    <weaponTags>
      <li>GDCRYST_TAGWEAPON_LargeBlunt</li>
    </weaponTags>
  </ThingDef>
  <!--■■■ SMALL ■■■-->
  <ThingDef Abstract="True" Name="GDCRYST_WEAPON_SmallBluntBase" ParentName="GDCRYST_WEAPON_LargeBluntBase"> 
    
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <Mass>100</Mass>
    </statBases>
    
    <equippedAngleOffset>-85</equippedAngleOffset>
    
    <weaponTags Inherit = "false">
      <li>GDCRYST_TAGWEAPON_SmallBlunt</li>
    </weaponTags>
  </ThingDef>
  
</Defs>