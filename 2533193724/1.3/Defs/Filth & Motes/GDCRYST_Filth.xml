<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
<!--■■■■■■■■■■■■■■■■■
    1. Gem Filth Base
    1a. Base
    1b. Amethyst
    ■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■ FILTH ■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■ 
    ■■■■■■■■■■■■■■■■■■1. GEM FILTH ■■■■■■■■■■■■■■■■■■■■■■■
    ■■■1a. BASE ■■■-->
  <ThingDef Name="GDCRYST_GemFilthBase" Abstract="True">
    <thingClass>Filth</thingClass>
    <graphicData>
      <graphicClass>Graphic_Cluster</graphicClass>
    
    </graphicData>
    <category>Filth</category>
    <altitudeLayer>Filth</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <drawerType>MapMeshOnly</drawerType>
    
    <statBases>
      <MaxHitPoints>30</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>2</Beauty>
      <Cleanliness>-1</Cleanliness>
    </statBases>
    <pathCost>35</pathCost> 
    
    <filth>
      <cleaningSound>Interact_CleanFilth</cleaningSound>
      <disappearsInDays>25~45</disappearsInDays>
      <rainWashes>false</rainWashes>
      <cleaningWorkToReduceThickness>35</cleaningWorkToReduceThickness>
      <canFilthAttach>false</canFilthAttach>
    </filth>
  </ThingDef>
  
  <!--■■■1b. AMETHYST GEM FILTH ■■■-->
  <ThingDef ParentName="GDCRYST_GemFilthBase">
    <defName>GDCRYST_FILTH_AmethystGemFilth</defName>
    <description>Shards of amethyst too small to be useful.</description>
    
    <label>amethyst granulate</label>
    <graphicData>
      <texPath>Filth/GranulateAmethyst</texPath>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    
    <useHitPoints>true</useHitPoints>
    
  </ThingDef>
  
</Defs>
