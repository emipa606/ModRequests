<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- ========== Patch - OkraDonkey.NoPrayer ========== -->
    <!-- Targeting Core\Defs\Joy\JoyGivers.xml -->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>Defs/JoyGiverDef[defName = "Pray"]/baseChance</xpath>
                <value>
                    <baseChance>0</baseChance>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>Defs/JoyGiverDef[defName = "Pray"]/pctPawnsEverDo</xpath>
                <value>
                    <pctPawnsEverDo>0</pctPawnsEverDo>
                </value>
            </li>
        </operations>
    </Operation>

</Patch>