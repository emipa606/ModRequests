<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>DevDesigner_BloodBrazier</defName>
    <workerClass>VanillaFurnitureExpanded.ThoughtWorker_ThoughtFromNearbyThingDef</workerClass>
    <requiredGenes>
      <li>Bloodfeeder</li>
    </requiredGenes>
    <replaceThoughts>
      <li>DevDesigner_BloodTorch</li>
      <li>DevDesigner_WallBloodTorch</li>
    </replaceThoughts>
    <stages>
      <li>
        <label>blood brazier</label>
        <description>No flame burns as softly as a blood brazier.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
    <modExtensions>
      <li Class="VanillaFurnitureExpanded.ThoughtGiverByProximityDefExtension">
        <ThingToGiveThought>DevDesigner_BloodBrazier</ThingToGiveThought>
        <DistanceToGiveThought>15</DistanceToGiveThought>
      </li>
    </modExtensions>
  </ThoughtDef>

  <ThoughtDef>
    <defName>DevDesigner_BloodTorch</defName>
    <workerClass>VanillaFurnitureExpanded.ThoughtWorker_ThoughtFromNearbyThingDef</workerClass>
    <requiredGenes>
      <li>Bloodfeeder</li>
    </requiredGenes>
    <replaceThoughts>
      <li>DevDesigner_WallBloodTorch</li>
    </replaceThoughts>
    <stages>
      <li>
        <label>blood torch</label>
        <description>No flame burns as softly as a blood torch.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
    <modExtensions>
      <li Class="VanillaFurnitureExpanded.ThoughtGiverByProximityDefExtension">
        <ThingToGiveThought>DevDesigner_RusticBloodTorchLamp</ThingToGiveThought>
        <DistanceToGiveThought>15</DistanceToGiveThought>
      </li>
    </modExtensions>
  </ThoughtDef>

  <ThoughtDef>
    <defName>DevDesigner_WallBloodTorch</defName>
    <workerClass>VanillaFurnitureExpanded.ThoughtWorker_ThoughtFromNearbyThingDef</workerClass>
    <requiredGenes>
      <li>Bloodfeeder</li>
    </requiredGenes>
    <replaceThoughts>
      <li>DevDesigner_BloodTorch</li>
    </replaceThoughts>
    <stages>
      <li>
        <label>blood torch</label>
        <description>No flame burns as softly as a blood torch.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
    <modExtensions>
      <li Class="VanillaFurnitureExpanded.ThoughtGiverByProximityDefExtension">
        <ThingToGiveThought>DevDesigner_WallBloodTorch</ThingToGiveThought>
        <DistanceToGiveThought>15</DistanceToGiveThought>
      </li>
    </modExtensions>
  </ThoughtDef>

</Defs>
