<Defs>

  <!-- DevDesigner_Blood_Apparel_HeraldicGreatHelm -->
  <ThingDef ParentName="ArmorSmithableBase">
    <defName>DevDesigner_Blood_Apparel_HeraldicGreatHelm</defName>
    <label>heraldic great helm (Sanguin)</label>
    <description>A greatly ornamented full-plate great helmet, often worn by jousters and heraldic champions and notable figures of notable houses in war. Portrays oneâ€™s noble status while still offering considerable protection in battle. \n\nThis great helm carries the colors of house Sanguin.</description>
    <!--<possessionCount>1</possessionCount>-->
    <recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Headgear/BloodHeraldicGreatHelm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>80</costStuffCount>
    <costList Inherit="False">
      <HemogenPack>1</HemogenPack>
    </costList>
    <statBases>
      <WorkToMake>22000</WorkToMake>
      <MaxHitPoints>350</MaxHitPoints>
      <Mass>3.4</Mass>
      <StuffEffectMultiplierArmor>1.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>10</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>-3</ShootingAccuracyPawn>
      <PainShockThreshold>0.15</PainShockThreshold>
      <MentalBreakThreshold>-0.05</MentalBreakThreshold>
      <SocialImpact>0.30</SocialImpact>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <wornGraphicPath>Headgear/BloodHeraldicGreatHelm</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>DevDesigner_Blood_Apparel_HeraldicGreatHelm</li>
      </tags>
      <defaultOutfitTags>
        <!-- <li>Soldier</li> -->
      </defaultOutfitTags>
    </apparel>

    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

