<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- DevDesigner_Blood_Apparel_HeraldicHeavyHauberk -->
  <ThingDef ParentName="ArmorSmithableBase">
    <defName>DevDesigner_Blood_Apparel_HeraldicHeavyHauberk</defName>
    <label>heraldic heavy hauberk (Sanguin)</label>
    <description>A full-body suit of heavy chainmail reinforced in key places with additional sheets and links of metal. Quite fatiguing to wear, but very protective. \n\nThis heavy hauberk carries the colors of house Sanguin.</description>
    <possessionCount>1</possessionCount>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/Armor/Hauberk/HeraldicHeavyHauberk</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <costList>
      <HemogenPack>1</HemogenPack>
    </costList>
    <statBases>
      <WorkToMake>28000</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>8</Mass>
      <StuffEffectMultiplierArmor>0.60</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.45</MoveSpeed>
      <PainShockThreshold>0.15</PainShockThreshold>
      <MentalBreakThreshold>-0.05</MentalBreakThreshold>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPaths>
        <li>Apparel/Armor/Hauberk/HeraldicHeavyHauberk</li>
        <li>Apparel/Armor/Hauberk/HeraldicHeavyHauberk2</li>
        <li>Apparel/Armor/Hauberk/HeraldicHeavyHauberk3</li>
      </wornGraphicPaths>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>DevDesigner_Blood_Apparel_HeraldicHeavyHauberk</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  <!-- DevDesigner_Blood_Apparel_FullPlate -->
  <ThingDef ParentName="ArmorSmithableBase">
    <defName>DevDesigner_Blood_Apparel_FullPlate</defName>
    <label>full plate (Sanguin)</label>
    <description>Few men can don armor as protective as the full plate set, which offers the greatest protection in the form of layered metal plates. They are nobles, lords, and men with the fortune required to purchase the masterfully crafted armor that effectively blocks many attacks. Light shining against the polished metal tells the enemy that the wearer is not only rich but also a lord of war.  \n\nThis full plate armor carries the colors of house Sanguin.</description>
    <graphicData>
      <texPath>Apparel/Armor/FullPlate/FullPlate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>

    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>200</costStuffCount>
    <costList>
      <HemogenPack>1</HemogenPack>
    </costList>

    <statBases>
      <WorkToMake>45000</WorkToMake>
      <MaxHitPoints>310</MaxHitPoints>
      <Mass>17</Mass>
      <StuffEffectMultiplierArmor>0.92</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>20</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-1.1</MoveSpeed>
    </equippedStatOffsets>

    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Armor/FullPlate/FullPlate</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>DevDesigner_Blood_Apparel_FullPlate</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

  <!-- DevDesigner_Blood_Apparel_LordFullPlate -->
  <ThingDef ParentName="ArmorSmithableBase">
    <defName>DevDesigner_Blood_Apparel_LordFullPlate</defName>
    <label>Adorned full plate (Sanguin)</label>
    <description>Few men can don armor as protective as the full plate set, which offers the greatest protection in the form of layered metal plates. They are nobles, lords, and men with the fortune required to purchase the masterfully crafted armor that effectively blocks many attacks. Light shining against the polished metal tells the enemy that the wearer is not only rich but also a lord of war. \n\nThis full plate armor carries the colors of house Sanguin.</description>
    <graphicData>
      <texPath>Apparel/Armor/LordsPlate/LordsPlate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <researchPrerequisites>
        <li>PlateArmor</li>
      </researchPrerequisites>
    </recipeMaker>

    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>250</costStuffCount>
    <costList>
      <HemogenPack>2</HemogenPack>
    </costList>

    <statBases>
      <MarketValue>5405</MarketValue>
      <WorkToMake>70000</WorkToMake>
      <MaxHitPoints>870</MaxHitPoints>
      <DeteriorationRate>0.2</DeteriorationRate>
      <Mass>17</Mass>
      <ArmorRating_Sharp>1.9</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.95</ArmorRating_Blunt>
      <Insulation_Cold>5</Insulation_Cold>
      <ArmorRating_Heat>1.07</ArmorRating_Heat>
      <EquipDelay>20</EquipDelay>
    </statBases>

    <equippedStatOffsets>
      <MoveSpeed>-1.1</MoveSpeed>
      <SocialImpact>0.30</SocialImpact>
      <PainShockThreshold>0.15</PainShockThreshold>
      <MentalBreakThreshold>-0.15</MentalBreakThreshold>
      <NegotiationAbility>0.05</NegotiationAbility>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>

    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Armor/LordsPlate/LordsPlate</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>DevDesigner_Blood_Apparel_LordFullPlate</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>
