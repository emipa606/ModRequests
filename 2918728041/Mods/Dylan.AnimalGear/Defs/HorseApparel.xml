<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- DevDesigner_Apparel_Horse_CaparisonBase -->
  <ThingDef Name="DevDesigner_Apparel_Horse_CaparisonBase" Abstract="true" ParentName="ApparelMakeableBase">
    <description>Caparisons are part of the horse armor known as barding, frequently embroidered with the coat of arms of the horse's rider.</description>
    <techLevel>Medieval</techLevel>

    <recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>

    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToMake>4500</WorkToMake>
      <Mass>5</Mass>
      <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>

    <costStuffCount>120</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <!-- <li>Leathery</li> -->
    </stuffCategories>

    <thingCategories>
      <li>Animal_Apparel</li>
    </thingCategories>
    <generateAllowChance>0</generateAllowChance>
  </ThingDef>

  <!-- DevDesigner_Apparel_Horse_CaparisonBack -->
  <ThingDef ParentName="DevDesigner_Apparel_Horse_CaparisonBase">
    <defName>DevDesigner_Apparel_Horse_CaparisonBack</defName>
    <label>caparison (back)</label>

    <graphicData>
      <texPath>Apparel/Caparison/CaparisonBack_Horse</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Legs</li>
        <li>Arms</li>
        <li>FrontRightLeg</li>
        <li>FrontLeftLeg</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Caparison/CaparisonBack</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>AnimalCUTOUTCOMPLEX</li>
        <li>Horse</li>
      </tags>
      <defaultOutfitTags>
        <li>Anything</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
  </ThingDef>

