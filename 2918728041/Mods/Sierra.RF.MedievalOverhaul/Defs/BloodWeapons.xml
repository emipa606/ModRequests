  <!-- DevDesigner_Blood_MeleeWeapon_BloodLongsword -->
  <ThingDef ParentName="DankPyon_Base_SharpSword_Oversize">
    <defName>DevDesigner_Blood_MeleeWeapon_BloodLongsword</defName>
    <label>blood longsword</label>
    <description>Where shorter and lighter blades are most useful in shield walls, the longsword shines in skirmishes and duels. By increasing the length, and consequently ditching a shield, a warrior can increase reach to inflict high damage through swings and even thrusts. Do not assume that the increased size brings increased weight, as a swift strike from a longsword has caught many enemies off-guard.</description>
    <graphicData>
      <texPath>Weapons/Swords/LongswordReforged</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.07,1.07)</drawSize>
    </graphicData>

    <soundInteract>Interact_BladelinkMonoSword</soundInteract>
    <meleeHitSound>MeleeHit_BladelinkMonoSword</meleeHitSound>

    <statBases>
      <WorkToMake>22000</WorkToMake>
      <Mass>2</Mass>
    </statBases>

    <!-- <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories> -->
    <costList Inherit="False">
      <HemogenPack>3</HemogenPack>
      <DevDesigner_Blood_MeleeWeapon_Longsword>1</DevDesigner_Blood_MeleeWeapon_Longsword>
      <DankPyon_Ruby>10</DankPyon_Ruby>
    </costList>

    <weaponTags Inherit="False">
      <li>DevDesigner_Blood_MeleeWeapon_BloodLongsword</li>
      <!-- <li>MedievalMeleeAdvanced</li> -->
    </weaponTags>

    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.6</cooldownTime>
        <armorPenetration>0.3</armorPenetration>
      </li>
      <li>
        <label>edge</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>30</power>
        <cooldownTime>2.79</cooldownTime>
        <armorPenetration>0.5</armorPenetration>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>DevDesigner_BloodWeapons</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
       <li>RF_ArcaneCraftingBench</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <modExtensions>
      <li Class="RimFantasy.RimFantasyExtension">
        <stuffKey>Ruby</stuffKey>
      </li>
      <li Class="RimFantasy.WeaponDropExtension">
        <preventDroppingWhenDowned>true</preventDroppingWhenDowned>
        <preventDroppingWhenDead>true</preventDroppingWhenDead>
      </li>
    </modExtensions>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="RimFantasy.CompProperties_GlowerStuffable">
        <glowRadius>1</glowRadius>
        <glowColor>(189,25,60)</glowColor>
        <glowWhileOnGround>true</glowWhileOnGround>
        <glowWhileStockpiled>true</glowWhileStockpiled>
        <glowWhileEquipped>true</glowWhileEquipped>
        <glowRadiusEquipped>1</glowRadiusEquipped>
        <glowWhileDrawn>true</glowWhileDrawn>
        <glowRadiusDrawn>1</glowRadiusDrawn>
      </li>
      <li Class="RimFantasy.CompProperties_ArcaneWeapon">
        <biocodeOnEquip>false</biocodeOnEquip>
        <minWeaponTraits>1</minWeaponTraits>
        <maxWeaponTraits>2</maxWeaponTraits>
        <weaponTraitsPool>
          <li>RF_MinorSlash_Longsword_Ruby</li>
          <li>RF_Slash_Longsword_Ruby</li>
          <li>RF_MajorSlash_Longsword_Ruby</li>
          <li>RF_MinorDrain_Ruby</li>
          <li>RF_Drain_Ruby</li>
          <li>RF_MajorDrain_Ruby</li>
        </weaponTraitsPool>
      </li>
    </comps>
  </ThingDef>

