<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VAE_Headgear_Balaclava"]/apparel/bodyPartGroups</xpath>
		<value>
			<bodyPartGroups>
				<li>Teeth</li>
			</bodyPartGroups>
		</value>
	</Operation>

	<!--<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="VAE_Headgear_Balaclava"]/apparel</xpath>
		<value>
			<forceRenderUnderHair>
				true
			</forceRenderUnderHair>
		</value>
	</Operation>-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VAE_Headgear_BallisticGoggles"]/apparel/layers</xpath>
		<value>
			<layers>
				<li>EyeCover</li>
			</layers>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VAE_Headgear_NightVisionGoggles"]/apparel/layers</xpath>
		<value>
			<layers>
				<li>EyeCover</li>
			</layers>
		</value>
	</Operation>
	
	

	
	<!--Apparel Expanded-->
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Apparel Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="VAE_Headgear_GasMask"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>EyeCover</li>
						</layers>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VAE_Headgear_GasMask"]/apparel</xpath>
					<value>
						<forceRenderUnderHair>
							true
						</forceRenderUnderHair>
					</value>
				</li>
				
			
			</operations>
		</match>
	</Operation>
	

	
	</Patch>
