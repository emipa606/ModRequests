<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<XmlExtensions.SettingsMenuDef>
		<defName>LacieCatsSettings</defName>
		<modId>Lacie.Cats</modId>
		<label>Lacie's cats</label>
		<settings>

			<li Class="XmlExtensions.Setting.SetColor">
				<color>(144,173,215)</color>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>Cat's capabilities settings</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
				<tKey>CatTitle</tKey>
			</li>
			
			<li Class="XmlExtensions.Setting.SetColor"/>
			<li Class="XmlExtensions.Setting.GapLine"></li>
			
			<li Class="XmlExtensions.Setting.Text">
				<text>In order for the changes to take effect, you need to restart the game</text>
				<anchor>Middle</anchor>
				<tKey>RestartWarning</tKey>
			</li>
			
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>CatsAreTrainable</key>
	            <label>Cats are trainable</label>
				<defaultValue>true</defaultValue>
                <tooltip>Cats have advanced trainability</tooltip>
				<tKey>LacieCatsAreTrainableTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>CatsCanHaul</key>
				<label>Cats can haul</label>
				<defaultValue>true</defaultValue>
				<tooltip>Cats are big enough to haul (but not to rescue)</tooltip>
				<tKey>LacieCatsCanHaulTitle</tKey>
			</li>
		</settings>
	</XmlExtensions.SettingsMenuDef>

</Defs>
