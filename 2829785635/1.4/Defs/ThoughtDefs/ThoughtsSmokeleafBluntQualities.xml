<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThoughtDef>
        <defName>CRFT_SmokedBlunt</defName>
        <showBubble>true</showBubble>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>smoked an awful blunt</label>
                <description>Absolute awful quality blunt, I think I just smoked in bass salts.</description>
                <baseMoodEffect>-15</baseMoodEffect>
            </li>

            <li>
                <label>smoked a poor blunt</label>
                <description>Not bad, but not great either.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>

            <li>
                <label>smoked a normal blunt</label>
                <visible>false</visible>
                <baseMoodEffect>0</baseMoodEffect>
            </li>

            <li>
                <label>smoked a good blunt</label>
                <description>I smoked a fine blunt.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>

            <li>
                <label>smoked an excellent blunt</label>
                <description>Now that's quality.</description>
                <baseMoodEffect>6</baseMoodEffect>
            </li>

            <li>
                <label>smoked a masterwork blunt</label>
                <description>Blunt so majestic, felt so high, I thought I was in heaven.</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>

            <li>
                <label>smoked a legendary blunt</label>
                <description>hgh,hghhg ghhggmh ,hg ,h,gh ,, g,f , ,a, ahhgmm,aaa,,</description>
                <baseMoodEffect>15</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>