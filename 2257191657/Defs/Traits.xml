<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <TraitDef>
    <defName>TBC_PacifistMedic</defName>
    <disabledWorkTags>Violent</disabledWorkTags>
    <degreeDatas>
      <li>
        <label>Pacifist (Medic)</label>
        <description>{PAWN_nameDef} has been hurt by the harsh realities of this world, but {PAWN_pronoun} has decided to do something about it by becoming a medic and refusing violence under any circumstances. It's respectable, if dangerous on the Rim. No wonder {PAWN_nameDef} is a bit neurotic.</description>
        <skillGains>
          <li>
            <key>Medicine</key>
            <value>4</value>
          </li>
        </skillGains>
        <statOffsets>
          <SocialImpact>0.10</SocialImpact>
          <MedicalTendQualityOffset>0.07</MedicalTendQualityOffset>
          <MentalBreakThreshold>0.08</MentalBreakThreshold>
        </statOffsets>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Brawler</li>
      <li>Bloodlust</li>
      <li>Abrasive</li>
      <li>Psychopath</li>
      <li>TBC_PacifistScientist</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Caring</li>
      <li>Social</li>
    </requiredWorkTags>
  </TraitDef>

  <TraitDef>
    <defName>TBC_PacifistScientist</defName>
    <disabledWorkTags>Violent</disabledWorkTags>
    <degreeDatas>
      <li>
        <label>Pacifist (Scientist)</label>
        <description>{PAWN_nameDef} has been hurt by the harsh realities of this world, and prefers to spend {PAWN_possessive} days alone researching. It's a bit obsessive. No wonder {PAWN_nameDef} is so bad with people.</description>
        <skillGains>
          <li>
            <key>Intellectual</key>
            <value>4</value>
          </li>
          <li>
            <key>Social</key>
            <value>-4</value>
          </li>
        </skillGains>
        <statOffsets>
          <ResearchSpeed>1.4</ResearchSpeed>
          <SocialImpact>-.50</SocialImpact>
        </statOffsets>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Kind</li>
      <li>Brawler</li>
      <li>TBC_PacifistMedic</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Intellectual</li>
    </requiredWorkTags>
  </TraitDef>

</Defs>
