		</tags>
		<comps>
			<li Class="MVCF.Comps.HediffCompProperties_ExtendedVerbGiver">
				<verbs>
					<li>


						<label>plasmacutter</label>
						<onlyManualCast>false</onlyManualCast>
						<targetParams>
							<canTargetLocations>true</canTargetLocations>
						</targetParams>

						<verbClass>Verb_Shoot</verbClass>
						<hasStandardCommand>true</hasStandardCommand>
						<defaultProjectile>Bullet_Plasmacutter</defaultProjectile>
						<warmupTime>1.4</warmupTime>
						<range>12.9</range>
						<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
						<burstShotCount>1</burstShotCount>
						<soundCast>VFE_PlasmaShot_Cutter</soundCast>
						<soundCastTail>GunTail_Medium</soundCastTail>
						<muzzleFlashScale>9</muzzleFlashScale>

						<accuracyTouch>0.84</accuracyTouch>
						<accuracyShort>0.81</accuracyShort>
						<accuracyMedium>0.55</accuracyMedium>
						<accuracyLong>0.35</accuracyLong>
						<defaultCooldownTime>2.30</defaultCooldownTime>
					</li>
				</verbs>
				<verbProps>
					<li>
						<label>plasmacutter</label>
						<draw>false</draw>
						<canBeToggled>true</canBeToggled>
						<canFireIndependently>false</canFireIndependently>
					</li>
				</verbProps>
			</li>
		</comps>
		<spawnThingOnRemoved>BIE_SpacerPlasmaCutterCombatModule</spawnThingOnRemoved>
	</HediffDef>



