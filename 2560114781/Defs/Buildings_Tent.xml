<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============================== NCR Tent ==============================-->

  <ThingDef ParentName="BedWithQualityBase">
    <defName>FCP_NCR_Tent</defName>
    <modExtensions>
        <li Class="tent.TentModExtension">
            <negateSleptOutside>true</negateSleptOutside>
            <negateWater>true</negateWater>
            <negateSleptInBarracks>false</negateSleptInBarracks>
        </li>
    </modExtensions>
        <label>NCR Tent</label>
        <description>A plain quadratic tent used by the NCR armed forces as a substitute to proper barracks. It’s large enough to house several soldiers at once. It’s most often used during offensive manoeuvres when large numbers of soldiers have to be moved and housed on quick notice.</description>
    <graphicData>
      <texPath>Things/Building/Tent/NCR_Tent</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(12,12)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
        </linkableFacilities>
      </li>
      <li Class="CompGiveThought.CompProperties_GiveThought">
        <thoughtDef>ArmyTent</thoughtDef>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Beauty>1</Beauty>
      <WorkToBuild>1600</WorkToBuild>
      <Mass>20</Mass>
      <BedRestEffectiveness>.75</BedRestEffectiveness>
      <Comfort>0.73</Comfort>
      <ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1.04</SurgerySuccessChanceFactor>
    </statBases>
    <size>(7,7)</size>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
      <WoodLog>20</WoodLog>
    </costList>
    <costStuffCount>100</costStuffCount>
    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>5</bed_healPerDay>
	  <bed_caravansCanUse>true</bed_caravansCanUse>
    </building>
    <techLevel>Industrial</techLevel>
	<castEdgeShadows>False</castEdgeShadows>
    <tickerType>Rare</tickerType>
  </ThingDef>

