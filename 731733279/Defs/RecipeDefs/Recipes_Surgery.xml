  <!-- Eye -->
  <RecipeDef ParentName="additionalpartsbase">
    <defName>installeye</defName>
    <workAmount>1000</workAmount>
    <workerClass>Recipe_InstallNaturalBodyPart</workerClass>
    <label>Install natural eye</label>
    <description>Installs a natural eye.</description>
    <jobString>Installing natural eye.</jobString>
    <recipeUsers>
      <li>Human</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Medicine</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>eye</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Medicine</li>
        <li>eye</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>RightEye</li>
      <li>LeftEye</li>
    </appliedOnFixedBodyParts>
    <workSkill>Medicine</workSkill>
  </RecipeDef>

