	<!-- Vanilla -->

	<RecipeDef ParentName="SurgeryNatural">
		<defName>InstallNaturalHeart</defName>
		<label>install heart</label>
		<description>Installs heart.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing heart.</jobString>
		<workAmount>2000</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Heart</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>Heart</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Heart</li>
		</appliedOnFixedBodyParts>
		<addsHediff>Heart</addsHediff>
	</RecipeDef>

