<?xml version="1.0" encoding="utf-8" ?>
<Defs>
		
	<ThingDef ParentName="HatMakeableBase">
    <defName>Callistan_TacticalVeil</defName>
    <label>tactical veil</label>
    <description>Eye protection, for high speed or dangerous experiments.</description>
    <graphicData>
      <texPath>Things/TacVeil/TacticalVeil</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
	  <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>7000</WorkToMake>
	  <MaxHitPoints>350</MaxHitPoints>
      <Mass>0.07</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
	  <EquipDelay>1.5</EquipDelay>
    </statBases>
	<equippedStatOffsets>
	   <ToxicSensitivity>-0.1</ToxicSensitivity>
	   <AimingDelayFactor>-0.15</AimingDelayFactor>
	</equippedStatOffsets>
	<generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/TacVeil/TacticalVeil</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>CallistanSoldier</li>
		<li>Outlander</li>
		<li>Spacer</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	<comps>
		<li Class="Androids.CompProperties_EnergySource">
			<compClass>Androids.EnergySource_SolarComp</compClass>
			<passiveEnergyGeneration>0.003</passiveEnergyGeneration>
		</li>
	</comps>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
