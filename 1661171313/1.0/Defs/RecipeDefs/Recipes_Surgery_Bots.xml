<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef ParentName="SurgeryFlesh">
    <defName>SalvageFibrousMechanites</defName>
    <label>salvage fibrous mechanites</label>
    <description>Salvage fibrous mechanites from a host.</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <jobString>Salvaging fibrous mechanites.</jobString>
    <workAmount>4500</workAmount>
    <removesHediff>FibrousMechanites</removesHediff>
    <successfullyRemovedHediffMessage>{0} has successfully excised {1}'s carcinoma.</successfullyRemovedHediffMessage>
    <deathOnFailedSurgeryChance>0.25</deathOnFailedSurgeryChance>
    <skillRequirements>
      <Medicine>10</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>6</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>MechaniteContainerEmpty</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
	<products>
      <MechaniteContainerFull>1</MechaniteContainerFull>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
	  <thingDefs>
        <li>MechaniteContainerEmpty</li>
      </thingDefs>
	  <disallowedThingDefs>
        <li>MedicineHerbal</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
  
