<Defs>


<!--Holy torches-->

	  <!--==================================================================================-->

<ThingDef ParentName="TorchTemp" MayRequire="Sov.ElseudPathf">
    <defName>GS_HolyTorch</defName>
	<label>holy torch</label>
   <description>A specially-treated wooden torch that produces white light over a large area. The holy glow is particularly pleasing to individuals with the angelic halo gene.</description>
    <graphicData>
      <texPath>Things/Buildings/HTorch</texPath>
    </graphicData>
    <uiIconPath>Things/Buildings/HTorchIcon</uiIconPath>
	
	<costList Inherit="False">
	  <HolyPowder>8</HolyPowder>
    </costList>

<comps>
      <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(255, 255, 255, 0)</glowColor>
		<!--<glowColor>(255, 234, 156, 0)</glowColor>-->
      </li>  
  
<li Class="SlavExtension.CompProperties_SanguophageMeetingFire">
	   <GraphicData>
	  <texPath>Things/Fire/Holy</texPath>
	     <graphicClass>Graphic_Flicker</graphicClass>
	   </GraphicData>
	   
        <fireSize>0.5</fireSize>
        <finalFireSize>0.5</finalFireSize>
        <offset>(0,0,0.1)</offset>
      </li>
	  
	  </comps>
  </ThingDef>

		  
		  
