<!--Blood-->

  <ThingDef ParentName="BrazierTemp" MayRequire="Ludeon.RimWorld.Biotech" >
	<defName>GS_Brazier</defName>
    <label>blood-brazier</label>
    <description>A bowl-shaped furnishing used to hold fire. Produces red light over a large area. The sanguine glow is particularly pleasing to individuals with the bloodfeeder gene.</description>
    
	<costList Inherit="False">
      <HemogenPack>1</HemogenPack>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
	
	 <comps>
	 
	       <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(460, 220, 205, 0)</glowColor>
      </li>
	 
	  <li Class="SlavExtension.CompProperties_SanguophageMeetingFire">
	   <GraphicData>
	  <texPath>Things/Fire/Blood</texPath>
	     <graphicClass>Graphic_Flicker</graphicClass>
	   </GraphicData>
	   
        <fireSize>1</fireSize>
        <finalFireSize>1</finalFireSize>
        <offset>(0,0,0.1)</offset>
      </li>
	  
	  </comps>
	  </ThingDef>
	  
	  
