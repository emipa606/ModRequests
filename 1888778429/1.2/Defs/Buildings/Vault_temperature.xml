<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	
	<ThingDef ParentName="WallLightBase">
		<defName>VT_Heatera</defName>
		<label>Vault Floor Heat Vent</label>
	    <altitudeLayer>FloorEmplacement</altitudeLayer>
		<description>Creates heat up to 25 degree celsius.</description>
			<graphicData>
			<texPath>Things/Building/Furniture/vt_ground_vent</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<size>(1,1)</size>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>30</basePowerConsumption>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>35</heatPerSecond>
				<heatPushMaxTemperature>25</heatPushMaxTemperature>
			</li>	
		</comps>
		<uiIconPath>Things/Building/Furniture/vt_ground_vent</uiIconPath>
		<uiIconScale>1</uiIconScale>
		<uiIconOffset>(0,-0.2)</uiIconOffset>
		<placeWorkers>
			<li>PlaceWorker_Heater</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>VaultFurniture</li>
		</researchPrerequisites>
		<designationCategory>VaultItems</designationCategory>
		<designatorDropdown>VaultCool</designatorDropdown>
		<clearBuildingArea>false</clearBuildingArea>
	</ThingDef>
	
	<ThingDef ParentName="WallLightBase">
		<defName>VT_Coolera</defName>
		<label>Vault Floor Cooling Vent</label>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<description>Reduces heat down to 21 degree celsius.</description>
			<graphicData>
			<texPath>Things/Building/Furniture/vt_ground_vent</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<tickerType>Rare</tickerType>
		<size>(1,1)</size>
		<placeWorkers>
		<li>PlaceWorker_Cooler</li>
		</placeWorkers>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>30</basePowerConsumption>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>-35</heatPerSecond>
				<heatPushMinTemperature>21</heatPushMinTemperature>
			</li>		
		</comps>
		<uiIconPath>Things/Building/Furniture/vt_ground_vent</uiIconPath>
		<uiIconScale>1</uiIconScale>
		<uiIconOffset>(0,-0.2)</uiIconOffset>
		<researchPrerequisites>
			<li>VaultFurniture</li>
		</researchPrerequisites>
		<designationCategory>VaultItems</designationCategory>
		<designatorDropdown>VaultCool</designatorDropdown>
		<clearBuildingArea>false</clearBuildingArea>
	</ThingDef>
	
	<ThingDef ParentName="WallLightBase">
		<defName>VT_freezera</defName>
		<label>Vault Freeze Vent</label>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<description>Reduces heat down to -1 degree celsius.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/vt_ground_vent</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		 <size>(1,1)</size>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>300</basePowerConsumption>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>-50</heatPerSecond>
				<heatPushMinTemperature>-5</heatPushMinTemperature>
			</li>	
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_TempControl">
				<energyPerSecond>21</energyPerSecond>
			</li>
		</comps>
		<uiIconPath>Things/Building/Furniture/vt_ground_vent</uiIconPath>
		<uiIconScale>1</uiIconScale>
		<uiIconOffset>(0,-0.2)</uiIconOffset>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>		
		<researchPrerequisites>
			<li>VaultFurniture</li>
		</researchPrerequisites>
		<designationCategory>VaultItems</designationCategory>
		<designatorDropdown>VaultCool</designatorDropdown>
		<clearBuildingArea>false</clearBuildingArea>
	</ThingDef>
	


	
</Defs>
