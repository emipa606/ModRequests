<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	
	<!-- Improved Nutrient Paste -->
	<ThingDef ParentName="MealBase">
		<defName>VTNutrientPaste</defName>
		<label>Vault-Tec Meal</label>
		<description>The revolutionary food synthethized by vault-tec! Anything you wish!</description>
		<graphicData>
			<texPath>Things/Item/Meal/VTNutrientPaste</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>12</MarketValue>
			<Nutrition>0.9</Nutrition>
			<Mass>0.03</Mass>
			<DeteriorationRate>2</DeteriorationRate>
		</statBases>
		<comps>
		<li Class="CompProperties_Rottable">
			<daysToRotStart>8</daysToRotStart>
			<rotDestroys>true</rotDestroys>
		</li>
		</comps>
	    <stackLimit>50</stackLimit>	
		<ingestible>
			<preferability>MealSimple</preferability>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
		</ingestible>
	</ThingDef>
	
	<ThingDef ParentName="MealCooked">
    <defName>VTMealLavish</defName>
    <label>Vault-Tec lavish meal</label>
    <description>A masterpiece of Vault-tec chemistry, this meal nourishes the body, mind, and soul and totally does not contain chemicals or nuclear material.</description>
    <graphicData>
      <texPath>Things/Item/Meal/VTMealLavish</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>40</MarketValue>
      <WorkToMake>800</WorkToMake>
      <Nutrition>1</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealLavish</preferability>
      <tasteThought>AteLavishMeal</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
    </ingestible>
  </ThingDef>
	
</Defs>