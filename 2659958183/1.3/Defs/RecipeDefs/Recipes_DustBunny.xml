<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>GatherDust</defName>
		<label>gather dust</label>
		<description>Gather up dust to make dust.</description>
		<jobString>Gathering Dust.</jobString>
		<workSkillLearnFactor>0.001</workSkillLearnFactor>
		<soundWorking>Interact_ConstructDirt</soundWorking>
		<workAmount>250</workAmount>
		<products>
			<Dust>10</Dust>
		</products>
		<workSkill>Crafting</workSkill>
  		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeDustBunny</defName>
		<label>make a dust bunny</label>
		<description>Make a dust bunny. Made from dust.</description>
		<jobString>Making Dust Bunny.</jobString>
        <workerClass>DustBunnies.Recipe_SpawnDustBunny</workerClass>
		<workSkillLearnFactor>0.001</workSkillLearnFactor>
		<soundWorking>Interact_ConstructDirt</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<workAmount>800</workAmount>
		<ingredients>
			<li>
			    <filter>
			      <thingDefs>
			        <li>Dust</li>
	     			 </thingDefs>
	  		    </filter>
			<count>100</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
			     <li>Dust</li>
			</thingDefs>
	     </fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
  		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
	</RecipeDef>


