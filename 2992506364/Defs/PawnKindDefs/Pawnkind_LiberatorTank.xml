<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <PawnKindDef>
        <defName>TLRS_Tank</defName>
        <label>Main Battle Tank</label>
        <race>TLRS_Race_Tank</race>
        <isFighter>true</isFighter>
        <combatPower>250</combatPower>
        <defaultFactionType>TLRS_LiberatorsFaction</defaultFactionType>
        <aiAvoidCover>true</aiAvoidCover>
		<allowInMechClusters>false</allowInMechClusters>
        <destroyGearOnDrop>true</destroyGearOnDrop>
        <canStrip>false</canStrip>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Vehicle/TLRS_tank</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>8</drawSize>
                    <shadowData>
                        <volume>(0.6, 0.8, 0.6)</volume>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponMoney>9999~9999</weaponMoney>
        <weaponTags>
            <li>TLRS_tankWeapon</li>
        </weaponTags>
    </PawnKindDef>

