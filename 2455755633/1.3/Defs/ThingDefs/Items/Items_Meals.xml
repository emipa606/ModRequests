<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MealCooked">
    <defName>SM_SaucedMealSimple</defName>
    <label>sauced simple meal</label>
    <description>A simple sauced meal quickly cooked from one main ingredient and topped with a condiment.</description>
    <graphicData>
      <texPath>Things/Meals/SM_SaucedSimple</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>20</MarketValue>
      <WorkToMake>400</WorkToMake>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealSimple</preferability>
      <ingestEffect>EatVegetarian</ingestEffect>
      <tasteThought>SM_AteSaucedSimpleMeal</tasteThought>
      <ingestSound>Meal_Eat</ingestSound>
    </ingestible>
    <comps>
			<li Class="VanillaCookingExpanded.CompProperties_StackByCondiments">
				<condimentTagToCheck>Condiments</condimentTagToCheck>
			</li>
    </comps>
  </ThingDef>

