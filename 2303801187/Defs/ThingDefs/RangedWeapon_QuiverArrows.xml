<Defs>

	<!-- blunt  -->
	<ThingDef Class="Quiver.ThingDef_ArrowBlunt" ParentName="BaseProjectileNeolithic">
		<defName>Quiver_Arrow_Blunt</defName>
		<label>blunt arrow</label>
		<graphicData>
			<texPath>quiver_arrow_blunt</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Quiver_Damage_Arrow_Blunt</damageDef>
			<damageAmountBase>12</damageAmountBase>
			<stoppingPower>5</stoppingPower>
			<armorPenetrationBase>0</armorPenetrationBase>
			<speed>40</speed>
		</projectile>
		<thingClass>Quiver.Projectile_ArrowBlunt</thingClass>
	</ThingDef>

	<DamageDef Name="Quiver_Damage_Arrow_Blunt">
		<defName>Quiver_Damage_Arrow_Blunt</defName>
		<label>blunt arrow</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<externalViolence>true</externalViolence>
		<deathMessage>{0} has been shot to death by a blunt arrow.</deathMessage>
		<hediff>Crack</hediff>
		<harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
		<impactSoundType>Bullet</impactSoundType>
		<armorCategory>Blunt</armorCategory>
		<overkillPctToDestroyPart>0~0.2</overkillPctToDestroyPart>
		<isRanged>true</isRanged>
		<makesAnimalsFlee>true</makesAnimalsFlee>
	</DamageDef>

