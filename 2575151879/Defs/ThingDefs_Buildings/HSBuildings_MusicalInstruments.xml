<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MusicalInstrumentBase">
    <defName>HSKoto</defName>
    <label>Koto</label>
    <description>The average Koto is roughly 180 centimetres (71 in) in length, and features 13 strings, it is also the national instrument of Japan.</description>
    <descriptionHyperlinks>
      <ThingDef>Harpsichord</ThingDef>
      <ThingDef>Piano</ThingDef>
    </descriptionHyperlinks>
    <size>(2,1)</size>
    <pathCost>30</pathCost>
    <minTechLevelToBuild>Medieval</minTechLevelToBuild>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <soundPlayInstrument>HSKoto_Play</soundPlayInstrument>
    <researchPrerequisites><li>Harp</li></researchPrerequisites>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <WorkToMake>18000</WorkToMake>
      <Mass>4</Mass>
      <JoyGainFactor>1</JoyGainFactor>
      <Beauty>10</Beauty>
    </statBases>
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      <researchPrerequisite>Harp</researchPrerequisite>
      <recipeUsers>
        <li>CraftingSpot</li>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <WoodLog>150</WoodLog>
    </costList>
    <building>
      <instrumentRange>15</instrumentRange>
    </building>
    <uiIconOffset>(0, 0.08)</uiIconOffset>
    <uiIconScale>0.9</uiIconScale>
    <graphicData>
      <texPath>Things/Building/Joy/HSKoto/HSKoto</texPath>
      <drawSize>(2,2)</drawSize>
      <graphicClass>Graphic_Multi</graphicClass>
      <shadowData>
        <volume>(0.08, 0.2, 0.08)</volume>
        <offset>(0, 0, -0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0.3,0.3,0.4,0.4)</rect>
      </damageData>
    </graphicData>
<rotatable>true</rotatable>
	  </ThingDef>


</Defs>
