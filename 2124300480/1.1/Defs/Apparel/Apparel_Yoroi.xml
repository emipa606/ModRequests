<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--Armour-->

	<ThingDef ParentName="ArmorSmithableBase" Name="MitsunariArmourBase">
		<defName>Mitsu_OGArmour</defName>
		<label>Mitsunari's armor [Classical]</label>
		<description>The ≈ç-yoroi is a prominent example of early Japanese armor worn by the samurai class of feudal Japan.</description>
		<techLevel>Medieval</techLevel>

		<graphicData>
			<texPath>Apparel/Armour/OG/OGnari</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<apparel>
			<wornGraphicPath>Apparel/Armour/OG/OGnari</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<tags>
				<li>MedievalMilitary</li>
				<li>PrestigeCombatGear</li>
			</tags>


			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>

			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>

			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>

		</apparel>



		<recipeMaker>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
		</recipeMaker>

		<costList>
			<Steel>100</Steel>
		</costList>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
    <costStuffCount>100</costStuffCount>

		<statBases>
			<Beauty>10</Beauty>
			<WorkToMake>50000</WorkToMake>
			<MaxHitPoints>300</MaxHitPoints>
			<Mass>30</Mass>
			<StuffEffectMultiplierArmor>1.0</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>20</EquipDelay>
		</statBases>
		<thingSetMakerTags>
			<li>RewardStandardLowFreq</li>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<equippedStatOffsets>
			<MoveSpeed>-0.8</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>


	</ThingDef>




	<ThingDef ParentName="MitsunariArmourBase">
				<defName>Mitsu_BSRArmour</defName>
