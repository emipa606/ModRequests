<?xml version="1.0" encoding="utf-8"?>
<Defs>

	


	<!--Kabuto-->

	<ThingDef ParentName="ArmorHelmetMakeableBase" Name="MitsunariHelmetBase">
		<defName>Mitsu_OGKabuto</defName>
		<label>Mitsunari's kabuto [Classical]</label>
		<description>Kabuto is a type of helmet worn by the samurai class and their retainers in feudal Japan.</description>
		<techLevel>Medieval</techLevel>

		<graphicData>
			<texPath>Apparel/Kabuto/OG/OGnari</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>


		<apparel>

			<wornGraphicPath>Apparel/Kabuto/OG/OGnari</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>


			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
				<li>PrestigeCombatGear</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>

		</apparel>



		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>

		<costList>
			<Gold>1</Gold>
			<Steel>50</Steel>
		</costList>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>

		<statBases>
			<Beauty>10</Beauty>
			<WorkToMake>10000</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>1.2</Mass>
			<StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.30</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>

		</equippedStatOffsets>

	</ThingDef>

	<ThingDef ParentName="MitsunariHelmetBase">
		<defName>Mitsu_SWKabuto</defName>
		<label>Mitsunari's kabuto [SW]</label>
		<graphicData>
			<texPath>Apparel/Kabuto/Musou/Munari</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<apparel>
			<wornGraphicPath>Apparel/Kabuto/Musou/Munari</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
	</ThingDef>
	

</Defs>