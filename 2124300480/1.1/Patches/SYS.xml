<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>SheathYourSword</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Mitsunari_KatanaBSR"]</xpath>
					<value>
						<comps>
							<li Class="SYS.CompProperties_WeaponExtention">
								<northOffset>
									<position>(0.30,0,-0.15)</position>
									<angle>-65</angle>
								</northOffset>
								<southOffset>
									<position>(-0.20,0,0)</position>
									<angle>85</angle>
								</southOffset>
								<eastOffset>
									<position>(0.4,0,-0.10)</position>
									<angle>-65</angle>
								</eastOffset>
								<westOffset>
									<position>(-0.4,0,-0.1)</position>
									<angle>65</angle>
								</westOffset>
							</li>

							<li Class="SYS.CompProperties_Sheath">
								<sheathOnlyGraphicData>
									<texPath>Weapon/SwordBSR/BSRSword_Sheath</texPath>
									<graphicClass>Graphic_Multi</graphicClass>
								</sheathOnlyGraphicData>
								<fullGraphicData>
									<texPath>Weapon/SwordBSR/BSRSword_Full</texPath>
									<graphicClass>Graphic_Multi</graphicClass>
								</fullGraphicData>
								<drawPosition>Side</drawPosition>
								<northOffset>
									<position>(0.25,0,-0.25)</position>
									<angle>0</angle>
								</northOffset>
								<southOffset>
									<position>(-0.30,0,-0.25)</position>
									<angle>0</angle>
								</southOffset>
								<eastOffset>
									<position>(-0.25,0,-0.4)</position>
									<angle>30</angle>
								</eastOffset>
								<westOffset>
									<position>(0.25,0,-0.4)</position>
									<angle>-30</angle>
								</westOffset>
							</li>

						</comps>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Mitsunari_Fan"]</xpath>
					<value>
						<comps>
							<li Class="SYS.CompProperties_WeaponExtention">
								<northOffset>
									<position>(0,0,0.15)</position>
									<angle>-25</angle>
								</northOffset>
								<southOffset>
									<position>(0,0,-0.15)</position>
									<angle>0</angle>
								</southOffset>
								<eastOffset>
									<position>(0.25,0,-0.15)</position>
									<angle>0</angle>
								</eastOffset>
								<westOffset>
									<position>(-0.25,0,-0.15)</position>
									<angle>0</angle>
								</westOffset>
							</li>

							<li Class="SYS.CompProperties_Sheath">
								<sheathOnlyGraphicData>
									<texPath>Weapon/Fan/SWFan_Sheath</texPath>
									<graphicClass>Graphic_Multi</graphicClass>
								</sheathOnlyGraphicData>
								<fullGraphicData>
									<texPath>Weapon/Fan/SWFan_Full</texPath>
									<graphicClass>Graphic_Multi</graphicClass>
								</fullGraphicData>
								<drawPosition>Back</drawPosition>
								<northOffset>
									<position>(-0.25,0,-0.10)</position>
									<angle>-65</angle>
								</northOffset>
								<southOffset>
									<position>(-0.25,0,-0.10)</position>
									<angle>-65</angle>
								</southOffset>
								<eastOffset>
									<position>(-0.25,0,-0.15)</position>
									<angle>0</angle>
								</eastOffset>
								<westOffset>
									<position>(0.25,0,-0.15)</position>
									<angle>0</angle>
								</westOffset>
							</li>

						</comps>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>