<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Core Boomrat Base/Kind is now xpathed to also be parent object for the other Elemental Rats-->

<!-- ============Foamrat============= -->

  <ThingDef ParentName="AnimalThingBaseErat">
    <defName>Foamrat</defName>
    <label>foamrat</label>
    <description>Either by deliberate genetic weaponization, or as an unusual defense mechanism, these rodent-like creatures create quite the sticky mess when killed.</description>
    <race>
	  <deathActionWorkerClass>Elemental_Boomers.DeathActionWorker_SmallExplosion_FireFoam</deathActionWorkerClass>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBaseErat">
    <defName>Foamrat</defName>
    <label>foamrat</label>
    <race>Foamrat</race>
    <lifeStages Inherit="False">
      <li>
        <label>foamrat calf</label>
        <labelPlural>foamrat calves</labelPlural>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Elemental Boomrats/Baserat</texPath>
          <color>(255,92,86)</color>
          <drawSize>0.80</drawSize>
          <shaderType>CutoutComplex</shaderType>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Boomrat/Dessicated_Boomrat</texPath>
          <drawSize>0.80</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Elemental Boomrats/Baserat</texPath>
          <color>(255,92,86)</color>
          <drawSize>1.0</drawSize>
          <shaderType>CutoutComplex</shaderType>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Boomrat/Dessicated_Boomrat</texPath>
          <drawSize>1.0</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Elemental Boomrats/Baserat</texPath>
          <color>(255,92,86)</color>
          <drawSize>1.15</drawSize>
          <shaderType>CutoutComplex</shaderType>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Boomrat/Dessicated_Boomrat</texPath>
          <drawSize>1.15</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

