<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- ============Elemental Boomalopes============= -->
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/BiomeDef[defName="TemperateForest" or defName="TemperateSwamp" or defName="TropicalRainforest" or defName="TropicalSwamp" or defName="AridShrubland" or defName="Desert"]/wildAnimals/Boomalope</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Boomalope"]/race</xpath>
		<value>
			<wildBiomes>
				<TemperateForest>0.08</TemperateForest>
				<TemperateSwamp>0.08</TemperateSwamp>
				<TropicalRainforest>0.1</TropicalRainforest>
				<TropicalSwamp>0.1</TropicalSwamp>
				<AridShrubland>0.1</AridShrubland>
				<Desert>0.12</Desert>
			</wildBiomes>
		</value>
	</Operation>

<!-- ============Elemental Rats============= -->
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/BiomeDef[defName="TemperateForest" or defName="TemperateSwamp" or defName="AridShrubland"]/wildAnimals/Boomrat</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Boomrat"]/race</xpath>
		<value>
			<wildBiomes>
				<TemperateForest>0.08</TemperateForest>
				<TemperateSwamp>0.08</TemperateSwamp>
				<AridShrubland>0.1</AridShrubland>
				<Desert>0.12</Desert>
			</wildBiomes>
		</value>
	</Operation>
</Patch>