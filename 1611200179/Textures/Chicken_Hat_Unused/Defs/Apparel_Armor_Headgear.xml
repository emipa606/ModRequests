<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
        	<!-- ================================== Chicken Helmet ====================================-->
  
    <ThingDef ParentName="RNHelmetBase">
    <defName>RNApparel_ChickenHatMGS_MSF</defName>
    <label>Chicken hat</label>
    <description>A tactical chicken hat developed by a famous PMC named Diamond Dogs, run by the legendary soldier Big Boss. Under his command this hat was used for the toughest operations during the Soviet invasion of Afghanistan, the Russians never saw it coming.
	
This hat gives you tactical advantage. It's pretty good.</description>
    <techLevel>Industrial</techLevel>
	
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
	  <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
	
    <graphicData>
      <texPath>Things/Apparel/Display/Hats/MSFMask_ChickenHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>1.2</Mass>
      <StuffEffectMultiplierArmor>0.75</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.45</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
	
		<equippedStatOffsets>
		    <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
			<PsychicSensitivity>-0.50</PsychicSensitivity>
			<PainShockThreshold>-0.05</PainShockThreshold>
			<MentalBreakThreshold>-0.01</MentalBreakThreshold>
		</equippedStatOffsets>
		
		<generateCommonality>0.1</generateCommonality>
	
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>40</costStuffCount>
    <costList>
      <ComponentIndustrial>2</ComponentIndustrial>
			<Plasteel>10</Plasteel>
    </costList>
    <apparel>
	<careIfWornByCorpse>false</careIfWornByCorpse>
	<!--<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>-->
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Combat_Headgear/MSFMask_ChickenHat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <!--<li>IndustrialMilitaryAdvanced</li>-->
		<li>MSF_SecretWeapon_ChickenHat</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
</Defs>