<?xml version="1.0" encoding="utf-8" ?>
<Defs>		
	<ThingDef ParentName="RNBaseBoltAction">
		<defName>RNGun_M2000NLRifle</defName>
		<label>M2000-NL</label>
		<description>The M2000 sniper rifle are a series of rifles developed by R&amp;D department of Outer Heaven. Assembled from weapon parts of other renowned rifles such as the Remington 700 along with originally crafted parts, this variant is a non-lethal grade 8 sniper rifle.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/Non_Lethal/M2000-NL</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker>
			<researchPrerequisite>PrecisionRifling</researchPrerequisite>
		</recipeMaker>
		<equippedAngleOffset>40</equippedAngleOffset>
		<generateCommonality>0.5</generateCommonality>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<Mass>2.0</Mass>
			<AccuracyTouch>0.68</AccuracyTouch>
			<AccuracyShort>0.75</AccuracyShort>
			<AccuracyMedium>0.85</AccuracyMedium>
			<AccuracyLong>0.90</AccuracyLong>
			<RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<!--<li>IndustrialGunAdvanced</li>-->
			<li>RNGun_M200NL</li>
		</weaponTags>
		<costList>
			<Steel>120</Steel>
			<ComponentIndustrial>10</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>RNBullet_TranqRoundRifle</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>46.9</range>
				<soundCast>RNShot_BoltGenericSD</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>1.8</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>10</power>
				<cooldownTime>1.9</cooldownTime>
			</li>
		</tools>
	</ThingDef>

