<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Armchair"]/comps</xpath>
		<success>Always</success>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Armchair"]</xpath>
				<value>
					<comps/>
				</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "Armchair"]/comps</xpath>
		<value>
        <li Class="DoubleGraphicLayer.CompProperties_SecondLayer">
          <graphicData>
            <texPath>Things/Building/Furniture/Armchair/Armchair_back</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(3,3)</drawSize>
          </graphicData>
          <altitudeLayer>MoteOverhead</altitudeLayer>
		</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "DiningChair"]/comps</xpath>
		<success>Always</success>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "DiningChair"]</xpath>
				<value>
					<comps/>
				</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "DiningChair"]/comps</xpath>
		<value>
        <li Class="DoubleGraphicLayer.CompProperties_SecondLayer">
          <graphicData>
            <texPath>Things/Building/Furniture/Diningchair/DiningChair_back</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(1,1)</drawSize>
          </graphicData>
          <altitudeLayer>MoteOverhead</altitudeLayer>
		</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "Armchair" or defName = "DiningChair"]</xpath>
		<value>
			<drawerType>MapMeshAndRealTime</drawerType>
		</value>
	</Operation>
</Patch>