<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThoughtDef[@ParentName = "DeathMemory"]</xpath><!-- All deaths eventuall become numb-->
        <value>
            <li Class = "OldMemory.ThoughtDefExtension">
                    <baseMultiplier>2</baseMultiplier>
                    <multiplierPerCount>0.8</multiplierPerCount> <!--This has a power of 1 by default-->
                    <minEmotion>-9999</minEmotion>
                    <maxEmotion>9999</maxEmotion>
            </li>
        </value>
    </Operation>
    
</Patch>
