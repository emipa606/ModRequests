<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <!-- Remove mud -->
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/BiomeDef/terrainPatchMakers/li/thresholds/li[terrain="Mud"]</xpath>
    </Operation>

    <!-- Remove marshes -->
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/BiomeDef/terrainPatchMakers/li/thresholds/li[terrain="Marsh"]</xpath>
    </Operation>

    <!-- Remove marshy soil -->
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/BiomeDef/terrainPatchMakers/li/thresholds/li[terrain="MarshyTerrain"]</xpath>
    </Operation>

    <!-- Remove soft sand -->
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/BiomeDef/terrainPatchMakers/li/thresholds/li[terrain="SoftSand"]</xpath>
    </Operation>

    <!-- Clean up empty nodes -->
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/BiomeDef/terrainPatchMakers/li[thresholds[not(*)]]</xpath>
    </Operation>
</Patch>