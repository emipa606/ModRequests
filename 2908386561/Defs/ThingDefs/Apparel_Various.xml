  <!--   suits    -->
  <ThingDef Name="scv_MilitaryUniformBase" ParentName="ApparelMakeableBase" Abstract="True">
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>60</Cloth>
    </costList>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>1</Mass>
      <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.07</ArmorRating_Blunt>
      <Insulation_Cold>17</Insulation_Cold>
      <Insulation_Heat>7</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <tradeTags>
      <li>Clothing</li>
    </tradeTags>
  </ThingDef>

