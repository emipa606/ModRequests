<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
		  <li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>

				<ThingCategoryDef>
					<defName>Ammo8x58mmRDanish</defName>
					<label>8x58mmR Danish</label>
					<parent>AmmoRifles</parent>
					<iconPath>UI/Icons/ThingCategories/CaliberRifle</iconPath>
				</ThingCategoryDef>
				
				<!-- ==================== AmmoSet ========================== -->

				<CombatExtended.AmmoSetDef>
					<defName>AmmoSet_8x58mmRDanish</defName>
					<label>8x58mmR Danish</label>
					<ammoTypes>
						<Ammo_8x58mmRDanish_FMJ>Bullet_8x58mmRDanish_FMJ</Ammo_8x58mmRDanish_FMJ>
						<Ammo_8x58mmRDanish_AP>Bullet_8x58mmRDanish_AP</Ammo_8x58mmRDanish_AP>
						<Ammo_8x58mmRDanish_HP>Bullet_8x58mmRDanish_HP</Ammo_8x58mmRDanish_HP>
					</ammoTypes>
					<similarTo>AmmoSet_Rifle</similarTo>	
				</CombatExtended.AmmoSetDef>
				
				<!-- ==================== Ammo ========================== -->

				<ThingDef Class="CombatExtended.AmmoDef" Name="8x58mmRDanishBase" ParentName="SmallAmmoBase" Abstract="True">
					<description>A rimmmed, bottle-necked rifle cartridge found mostly in outdated bolt-action firearms.</description>
					<statBases>
					<Mass>0.031</Mass>
					<Bulk>0.04</Bulk>
					</statBases>
					<tradeTags>
						<li>CE_AutoEnableTrade</li>
						<li>CE_AutoEnableCrafting</li>
					</tradeTags>
					<thingCategories>
						<li>Ammo8x58mmRDanish</li>
					</thingCategories>
				</ThingDef>

				<ThingDef Class="CombatExtended.AmmoDef" ParentName="8x58mmRDanishBase">
					<defName>Ammo_8x58mmRDanish_FMJ</defName>
					<label>8x58mmR Danish cartridge (FMJ)</label>
					<graphicData>
						<texPath>Things/Ammo/Rifle/FMJ</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<statBases>
						<MarketValue>0.1</MarketValue>
					</statBases>
					<ammoClass>FullMetalJacket</ammoClass>
					<cookOffProjectile>Bullet_8x58mmRDanish_FMJ</cookOffProjectile>
				</ThingDef>

				<ThingDef Class="CombatExtended.AmmoDef" ParentName="8x58mmRDanishBase">
					<defName>Ammo_8x58mmRDanish_AP</defName>
					<label>8x58mmR Danish cartridge (AP)</label>
					<graphicData>
						<texPath>Things/Ammo/Rifle/AP</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<statBases>
						<MarketValue>0.1</MarketValue>
					</statBases>
					<ammoClass>ArmorPiercing</ammoClass>
					<cookOffProjectile>Bullet_8x58mmRDanish_AP</cookOffProjectile>
				</ThingDef>

				<ThingDef Class="CombatExtended.AmmoDef" ParentName="8x58mmRDanishBase">
					<defName>Ammo_8x58mmRDanish_HP</defName>
					<label>8x58mmR Danish cartridge (HP)</label>
					<graphicData>
						<texPath>Things/Ammo/Rifle/HP</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<statBases>
						<MarketValue>0.1</MarketValue>
					</statBases>
					<ammoClass>HollowPoint</ammoClass>
					<cookOffProjectile>Bullet_8x58mmRDanish_HP</cookOffProjectile>
				</ThingDef>

				<!-- ================== Projectiles ================== -->

				<ThingDef Name="Base8x58mmRDanishBullet" ParentName="BaseBullet" Abstract="true">
					<graphicData>
						<texPath>Things/Projectile/Bullet_Small</texPath>
						<graphicClass>Graphic_Single</graphicClass>
					</graphicData>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageDef>Bullet</damageDef>
						<speed>154</speed>
						<dropsCasings>true</dropsCasings>
					</projectile>
				</ThingDef>

				<ThingDef ParentName="Base8x58mmRDanishBullet">
					<defName>Bullet_8x58mmRDanish_FMJ</defName>
					<label>8x58mmR Danish bullet (FMJ)</label>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageAmountBase>18</damageAmountBase>
						<armorPenetrationSharp>6.5</armorPenetrationSharp>
						<armorPenetrationBlunt>58.76</armorPenetrationBlunt>
					</projectile>
				</ThingDef>

				<ThingDef ParentName="Base8x58mmRDanishBullet">
					<defName>Bullet_8x58mmRDanish_AP</defName>
					<label>8x58mmR Danish bullet (AP)</label>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageAmountBase>11</damageAmountBase>
						<armorPenetrationSharp>13</armorPenetrationSharp>
						<armorPenetrationBlunt>58.76</armorPenetrationBlunt>
					</projectile>
				</ThingDef>

				<ThingDef ParentName="Base8x58mmRDanishBullet">
					<defName>Bullet_8x58mmRDanish_HP</defName>
					<label>8x58mmR Danish bullet (HP)</label>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageAmountBase>23</damageAmountBase>
						<armorPenetrationSharp>3</armorPenetrationSharp>
						<armorPenetrationBlunt>58.76</armorPenetrationBlunt>
					</projectile>
				</ThingDef>


				<!-- ==================== Recipes ========================== -->

				<RecipeDef ParentName="AmmoRecipeBase">
					<defName>MakeAmmo_8x58mmRDanish_FMJ</defName>
					<label>make 8x58mmR Danish (FMJ) cartridge x500</label>
					<description>Craft 500 8x58mmR Danish (FMJ) cartridges.</description>
					<jobString>Making 8x58mmR Danish (FMJ) cartridges.</jobString>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</filter>
							<count>32</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<Ammo_8x58mmRDanish_FMJ>500</Ammo_8x58mmRDanish_FMJ>
					</products>
						<workAmount>3200</workAmount>		
				</RecipeDef>

				<RecipeDef ParentName="AmmoRecipeBase">
					<defName>MakeAmmo_8x58mmRDanish_AP</defName>
					<label>make 8x58mmR Danish (AP) cartridge x500</label>
					<description>Craft 500 8x58mmR Danish (AP) cartridges.</description>
					<jobString>Making 8x58mmR Danish (AP) cartridges.</jobString>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</filter>
							<count>32</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<Ammo_8x58mmRDanish_AP>500</Ammo_8x58mmRDanish_AP>
					</products>
						<workAmount>3840</workAmount>		
				</RecipeDef>

				<RecipeDef ParentName="AmmoRecipeBase">
					<defName>MakeAmmo_8x58mmRDanish_HP</defName>
					<label>make 8x58mmR Danish (HP) cartridge x500</label>
					<description>Craft 500 8x58mmR Danish (HP) cartridges.</description>
					<jobString>Making 8x58mmR Danish (HP) cartridges.</jobString>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</filter>
							<count>32</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<Ammo_8x58mmRDanish_HP>500</Ammo_8x58mmRDanish_HP>
					</products>
						<workAmount>3200</workAmount>		
				</RecipeDef>

			</value>
		</match>	  
	</Operation>


</Patch>
