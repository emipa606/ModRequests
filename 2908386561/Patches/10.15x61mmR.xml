<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
		  <li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>

				<ThingCategoryDef>
					<defName>Ammo10x62mmR</defName>
					<label>10.15x62mmR</label>
					<parent>AmmoRifles</parent>
					<iconPath>UI/Icons/ThingCategories/CaliberRifle</iconPath>
				</ThingCategoryDef>
				
				<!-- ==================== AmmoSet ========================== -->

				<CombatExtended.AmmoSetDef>
					<defName>AmmoSet_10x62mmR</defName>
					<label>10.15x62mmR</label>
					<ammoTypes>
						<Ammo_10x62mmR_FMJ>Bullet_10x62mmR_FMJ</Ammo_10x62mmR_FMJ>
						<Ammo_10x62mmR_AP>Bullet_10x62mmR_AP</Ammo_10x62mmR_AP>
						<Ammo_10x62mmR_HP>Bullet_10x62mmR_HP</Ammo_10x62mmR_HP>
					</ammoTypes>
					<similarTo>AmmoSet_Rifle</similarTo>	
				</CombatExtended.AmmoSetDef>
				
				<!-- ==================== Ammo ========================== -->

				<ThingDef Class="CombatExtended.AmmoDef" Name="10x62mmRBase" ParentName="SmallAmmoBase" Abstract="True">
					<description>Late blackpowder cartridge.</description>
					<statBases>
					<Mass>0.031</Mass>
					<Bulk>0.04</Bulk>
					</statBases>
					<tradeTags>
						<li>CE_AutoEnableTrade</li>
						<li>CE_AutoEnableCrafting</li>
					</tradeTags>
					<thingCategories>
						<li>Ammo10x62mmR</li>
					</thingCategories>
				</ThingDef>

				<ThingDef Class="CombatExtended.AmmoDef" ParentName="10x62mmRBase">
					<defName>Ammo_10x62mmR_FMJ</defName>
					<label>10.15x62mmR cartridge (FMJ)</label>
					<graphicData>
						<texPath>Things/Ammo/Rifle/FMJ</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<statBases>
						<MarketValue>0.1</MarketValue>
					</statBases>
					<ammoClass>FullMetalJacket</ammoClass>
					<cookOffProjectile>Bullet_10x62mmR_FMJ</cookOffProjectile>
				</ThingDef>

				<ThingDef Class="CombatExtended.AmmoDef" ParentName="10x62mmRBase">
					<defName>Ammo_10x62mmR_AP</defName>
					<label>10.15x62mmR cartridge (AP)</label>
					<graphicData>
						<texPath>Things/Ammo/Rifle/AP</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<statBases>
						<MarketValue>0.1</MarketValue>
					</statBases>
					<ammoClass>ArmorPiercing</ammoClass>
					<cookOffProjectile>Bullet_10x62mmR_AP</cookOffProjectile>
				</ThingDef>

				<ThingDef Class="CombatExtended.AmmoDef" ParentName="10x62mmRBase">
					<defName>Ammo_10x62mmR_HP</defName>
					<label>10.15x62mmR cartridge (HP)</label>
					<graphicData>
						<texPath>Things/Ammo/Rifle/HP</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<statBases>
						<MarketValue>0.1</MarketValue>
					</statBases>
					<ammoClass>HollowPoint</ammoClass>
					<cookOffProjectile>Bullet_10x62mmR_HP</cookOffProjectile>
				</ThingDef>

				<!-- ================== Projectiles ================== -->

				<ThingDef Name="Base10x62mmRBullet" ParentName="BaseBullet" Abstract="true">
					<graphicData>
						<texPath>Things/Projectile/Bullet_Small</texPath>
						<graphicClass>Graphic_Single</graphicClass>
					</graphicData>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageDef>Bullet</damageDef>
						<speed>154</speed>
						<dropsCasings>true</dropsCasings>
					</projectile>
				</ThingDef>

				<ThingDef ParentName="Base10x62mmRBullet">
					<defName>Bullet_10x62mmR_FMJ</defName>
					<label>10.15x62mmR bullet (FMJ)</label>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageAmountBase>20</damageAmountBase>
						<armorPenetrationSharp>4.5</armorPenetrationSharp>
						<armorPenetrationBlunt>54.62</armorPenetrationBlunt>
					</projectile>
				</ThingDef>

				<ThingDef ParentName="Base10x62mmRBullet">
					<defName>Bullet_10x62mmR_AP</defName>
					<label>10.15x62mmR bullet (AP)</label>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageAmountBase>13</damageAmountBase>
						<armorPenetrationSharp>9</armorPenetrationSharp>
						<armorPenetrationBlunt>54.62</armorPenetrationBlunt>
					</projectile>
				</ThingDef>

				<ThingDef ParentName="Base10x62mmRBullet">
					<defName>Bullet_10x62mmR_HP</defName>
					<label>10.15x62mmR bullet (HP)</label>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageAmountBase>25</damageAmountBase>
						<armorPenetrationSharp>3</armorPenetrationSharp>
						<armorPenetrationBlunt>54.62</armorPenetrationBlunt>
					</projectile>
				</ThingDef>


				<!-- ==================== Recipes ========================== -->

				<RecipeDef ParentName="AmmoRecipeBase">
					<defName>MakeAmmo_10x62mmR_FMJ</defName>
					<label>make 10.15x62mmR (FMJ) cartridge x500</label>
					<description>Craft 500 10.15x62mmR (FMJ) cartridges.</description>
					<jobString>Making 10.15x62mmR (FMJ) cartridges.</jobString>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</filter>
							<count>20</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<Ammo_10x62mmR_FMJ>250</Ammo_10x62mmR_FMJ>
					</products>
						<workAmount>1800</workAmount>		
				</RecipeDef>

				<RecipeDef ParentName="AmmoRecipeBase">
					<defName>MakeAmmo_10x62mmR_AP</defName>
					<label>make 10.15x62mmR (AP) cartridge x500</label>
					<description>Craft 500 10.15x62mmR (AP) cartridges.</description>
					<jobString>Making 10.15x62mmR (AP) cartridges.</jobString>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</filter>
							<count>20</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<Ammo_10x62mmR_AP>250</Ammo_10x62mmR_AP>
					</products>
						<workAmount>2200</workAmount>		
				</RecipeDef>

				<RecipeDef ParentName="AmmoRecipeBase">
					<defName>MakeAmmo_10x62mmR_HP</defName>
					<label>make 10.15x62mmR (HP) cartridge x500</label>
					<description>Craft 500 10.15x62mmR (HP) cartridges.</description>
					<jobString>Making 10.15x62mmR (HP) cartridges.</jobString>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</filter>
							<count>20</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<Ammo_10x62mmR_HP>250</Ammo_10x62mmR_HP>
					</products>
						<workAmount>1800</workAmount>		
				</RecipeDef>


			</value>
		</match>	  
	</Operation>


</Patch>
