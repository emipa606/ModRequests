<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
		  <li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="scv_MilitaryUniformBase"]</xpath>
					<value>
						<equippedStatOffsets>
							<CarryBulk>10</CarryBulk>
						</equippedStatOffsets>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="scv_MilitaryOvercoatBase"]/apparel/layers</xpath>
					<value>
						<layers Inherit="False">
							<li>Shell</li>
						</layers>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="scv_MilitaryWebbingBase"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>Webbing</li>
						</layers>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="scv_MilitaryWebbingBase"]/apparel/bodyPartGroups</xpath>
					<value>
						<bodyPartGroups>
							<li>Shoulders</li>
						</bodyPartGroups>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="scv_MilitaryWebbingBase"]/statBases</xpath>
					<value>
						<Bulk>4</Bulk>
						<WornBulk>2</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="scv_MilitaryWebbingBase"]</xpath>
					<value>
						<equippedStatOffsets>
							<CarryBulk>20</CarryBulk>
							<ReloadSpeed>0.1</ReloadSpeed>
						</equippedStatOffsets>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="scv_FieldBackpack"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>Backpack</li>
						</layers>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="scv_FieldBackpack"]/apparel/bodyPartGroups</xpath>
					<value>
						<bodyPartGroups>
							<li>Shoulders</li>
						</bodyPartGroups>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="scv_FieldBackpack"]/statBases</xpath>
					<value>
						<Bulk>4</Bulk>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="scv_FieldBackpack"]</xpath>
					<value>
						<equippedStatOffsets>
							<CarryBulk>35</CarryBulk>
						</equippedStatOffsets>
					</value>
				</li>

			</operations>
		</match>	  
	</Operation>


</Patch>
