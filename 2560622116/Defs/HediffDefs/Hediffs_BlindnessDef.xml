<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<HediffDef>
    <defName>BS_BlindSightWorks</defName>
    <label>Blindsight</label>
    <description>This person has successfully completed the ritual of Blindsight and is now unlocking their true vision.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
	<initialSeverity>0</initialSeverity>
    <lethalSeverity>1</lethalSeverity>
	<maxSeverity>0.99</maxSeverity>
    <makesSickThought>false</makesSickThought>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.25</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>	
		<li>
			<minSeverity>0</minSeverity>
			<label>sightless</label>
			<capMods>
				<li>
					<capacity>Hearing</capacity>
					<offset>0.05</offset>
				</li>
				<li>
					<capacity>Manipulation</capacity>
					<offset>0.05</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-0.6</offset>
				</li>
			</capMods>	
		</li>
		<li>
			<minSeverity>0.2</minSeverity>
			<label>Uneasy</label>
			<capMods>
				<li>
					<capacity>Hearing</capacity>
					<offset>0.3</offset>
				</li>
				<li>
					<capacity>Manipulation</capacity>
					<offset>0.2</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-0.40</offset>
				</li>
			</capMods>
		</li>
		<li>
			<minSeverity>0.5</minSeverity>
			<label>Steady</label>
			<capMods>
				<li>
					<capacity>Hearing</capacity>
					<offset>0.5</offset>
				</li>
				<li>
					<capacity>Manipulation</capacity>
					<offset>0.3</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-0.30</offset>
				</li>
			</capMods>
		</li>
		<li>
			<minSeverity>0.9</minSeverity>
			<label>Attuned</label>
			<capMods>
				<li>
					<capacity>Hearing</capacity>
					<offset>1</offset>
				</li>
				<li>
					<capacity>Manipulation</capacity>
					<offset>0.5</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-0.25</offset>
				</li>
			</capMods>
		</li>		
	</stages>
  </HediffDef>
</Defs>