<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="FurnitureWithQualityBase">
    <defName>DignifiedMeditationCushion</defName>
    <label>dignified meditation cushion</label>
    <drawGUIOverlay>true</drawGUIOverlay>
    <drawGUIOverlayQuality>false</drawGUIOverlayQuality>
    <description>A big comfy cushion upon which to contemplate the universe. Dignified psycasters will appreciate this one's regal design.</description>
	<rotatable>false</rotatable>
    <castEdgeShadows>True</castEdgeShadows>
    <altitudeLayer>Building</altitudeLayer>
    <category>Building</category>
    <size>(1,1)</size>
	<interactionCellOffset>(0,0,0)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <WorkToBuild>400</WorkToBuild>
      <Mass>10</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>10</Beauty>
      <Comfort>1</Comfort>
	   <MeditationFocusStrength>0.12</MeditationFocusStrength>
    </statBases>
	<thingClass>Building_Throne</thingClass>
    <socialPropernessMatters>true</socialPropernessMatters>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
	 <researchPrerequisites>
      <li>MeditationCushions</li>
    </researchPrerequisites>
    <pathCost>20</pathCost>
    <fillPercent>0.15</fillPercent>
    <building>
      <isSittable>true</isSittable>
    <destroySound>BuildingDestroyed_Soft_Small</destroySound>
    </building>
    <uiIconScale>1</uiIconScale>
    <graphicData>
      <drawSize>1.4</drawSize>
      <texPath>Dignified</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
<li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>true</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Throne</compClass>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Dignified</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_ThroneSatisfiesRequirements">
            <offset>0.08</offset>
          </li>
          <li Class="FocusStrengthOffset_RoomImpressiveness">
            <curve>
              <points>
                <li>(0, -0.05)</li>
                <li>(30, 0.0)</li>
                <li>(60, 0.04)</li>
                <li>(100,  0.08)</li>
                <li>(170,  0.1)</li>
              </points>
            </curve>
          </li>
        </offsets>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_MeditationSpot</li>
    </placeWorkers>
    <modExtensions>
      <li Class="Meditation.BuildingExtension_MeditationOn" />
    </modExtensions>
  </ThingDef>
  
</Defs>