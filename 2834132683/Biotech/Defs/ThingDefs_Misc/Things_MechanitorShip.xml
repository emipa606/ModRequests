<?xml version="1.0" encoding="utf-8" ?>


<Defs>

	<!-- Mechanitor Ship -->
	
  
<ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>MechanitorShip_Incoming</defName>
    <label>Mechanitor Ship(incoming)</label>
	<thingClass>SRTS.SRTSIncoming</thingClass>
    <graphicData>
      <texPath>TransportShuttle/MechanitorShip</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(6,6)</drawSize>
      <color>(158,158,158)</color>
    </graphicData>	
    <skyfaller>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
      <shadowSize>(5.5,3.5)</shadowSize>
      <motesPerCell>1</motesPerCell>	
      <anticipationSound>Shuttle_Landing</anticipationSound>
      <anticipationSoundTicks>250</anticipationSoundTicks>
      <ticksToImpactRange>200~250</ticksToImpactRange>
      <angleCurve>
        <points>
          <li>(0,-60)</li>
          <li>(1,-90)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(-90,-120)</li>
          <li>(-90.5,-95)</li>
          <li>(-90.9,-95)</li>
          <li>(-90.95,-90)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0.95,2.5)</li>
          <li>(1,0)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0.6,0.6)</li>
          <li>(0.95,0.1)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>MechanitorShip_Leaving</defName>
    <label>Mechanitor Ship(leaving)</label>	
	<thingClass>SRTS.SRTSLeaving</thingClass>
    <graphicData>
      <texPath>TransportShuttle/MechanitorShip</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(6,6)</drawSize>
      <color>(158,158,158)</color>
    </graphicData>	
    <skyfaller>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
      <shadowSize>(5.5,3.5)</shadowSize>
      <motesPerCell>1</motesPerCell>	
      <reversed>true</reversed>
      <anticipationSound>Shuttle_Leaving</anticipationSound>
      <anticipationSoundTicks>-10</anticipationSoundTicks>
      <ticksToImpactRange>-40~-15</ticksToImpactRange>
      <moteSpawnTime>0.05</moteSpawnTime>
      <angleCurve>
        <points>
          <li>(0,90)</li>
          <li>(1,70)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(90,90)</li>
          <li>(90.15,100)</li>
          <li>(90.5,85)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.08,2)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0,0.2)</li>
          <li>(0.4,0.7)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>
 
  <ThingDef>
    <defName>MechanitorShip_Active</defName>
    <label>Mechanitor Ship(active)</label>
    <category>Item</category>
    <thingClass>ActiveDropPod</thingClass>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>TransportShuttle/MechanitorShip</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6,6)</drawSize>
      <color>(158,158,158)</color>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <blockWind>false</blockWind>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>2000</MaxHitPoints>
      <Flammability>0.5</Flammability>
    </statBases>
    <selectable>true</selectable>
  </ThingDef>  

</Defs>

