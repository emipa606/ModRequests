<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<!-- Mechanitor Ship -->
	
	
<ThingDef ParentName="NECShipBase">
    <defName>MechanitorShip</defName>
    <label>Mechanitor Ship</label> 
    <description>A ship built using ancient mechanitor technology. Serves as a vehicle between the surface and orbit, as well as between the moons of the planetary system.
By recreating the technological solutions of the ancient civilization of mechanitors, the ship has a very high carrying capacity, decent speed, allows you to visit quite remote places, but consumes decent fuel, which is compensated by a capacious tank.


Passengers: 1 - 12
Speed: 30
Space Flight: Yes
Tank capacity: 600L
Fuel efficiency: 2.5 per cell
Maximum distance: 360 cells
Load capacity: 2000kg</description>

	<altitudeLayer>Building</altitudeLayer>
    <fillPercent>1.0</fillPercent>
	<pathCost>50</pathCost>
    <blockWind>false</blockWind>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <tickerType>Normal</tickerType>
    <canOverlapZones>true</canOverlapZones>	
    <selectable>true</selectable>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
    <drawerType>MapMeshOnly</drawerType>
    <repairEffect>ConstructMetal</repairEffect>
    <forceDebugSpawnable>true</forceDebugSpawnable>	
    <castEdgeShadows>false</castEdgeShadows>
	
    <graphicData>
      <texPath>TransportShuttle/MechanitorShip</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6,6)</drawSize>
      <color>(158,158,158)</color>
      <shadowData>
        <volume>(4.1, 1.0, 1.8)</volume>
        <offset>(0, 0, -0.1)</offset>
      </shadowData>
    </graphicData>
	
    <size>(5,3)</size>
	
    <statBases>
      <MaxHitPoints>2000</MaxHitPoints>
      <WorkToBuild>95000</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Mass>3000</Mass>
      <Beauty>30</Beauty>
    </statBases>
	
    <costList>
      <Steel>800</Steel>
      <Plasteel>500</Plasteel>
      <Uranium>400</Uranium>
      <Gold>200</Gold>	  
      <ComponentIndustrial>12</ComponentIndustrial>
      <ComponentSpacer>8</ComponentSpacer>
      <SubcoreBasic>4</SubcoreBasic>
    </costList>
	
    <building>
      <claimable>false</claimable>
      <soundAmbient>SpacedroneIdle_Ambience</soundAmbient>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>

	<comps>
	  
      <li Class="CompProperties_Transporter">
        <restEffectiveness>1</restEffectiveness>
        <massCapacity>2000</massCapacity>		
        <pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
        <pawnExitSound>Shuttle_PawnExit</pawnExitSound>		
      </li>
	  
      <li Class="SRTS.CompProperties_LaunchableSRTS">
        <travelSpeed>30</travelSpeed>
        <fuelPerTile>2.5</fuelPerTile>
        <minPassengers>1</minPassengers>
        <maxPassengers>12</maxPassengers>
        <spaceFaring>true</spaceFaring>
        <shuttleBayLanding>true</shuttleBayLanding>
      </li>
	  
      <li Class="CompProperties_Refuelable"> 
        <fuelCapacity>600</fuelCapacity>
        <targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
        <initialConfigurableTargetFuelLevel>150</initialConfigurableTargetFuelLevel>
        <fuelFilter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <initialFuelPercent>0.0</initialFuelPercent>
        <autoRefuelPercent>1</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
        <drawFuelGaugeInMap>false</drawFuelGaugeInMap>
      </li>
	  
      <li Class="CompProperties_Breakdownable" />
	  
      <li Class="CompProperties_Flickable" />
    </comps>
	<designationCategory>Transport</designationCategory>
    <researchPrerequisites>
      <li>Research_MechanitorShip</li>
    </researchPrerequisites>
	
    <constructionSkillPrerequisite>12</constructionSkillPrerequisite> 
	
    <uiIconScale>1.0</uiIconScale> 
	
    <killedLeavings>
      <Plasteel>200</Plasteel>
      <Uranium>150</Uranium>
      <Gold>50</Gold>	  
      <ComponentIndustrial>5</ComponentIndustrial>
      <ComponentSpacer>3</ComponentSpacer>
      <ChunkSlagSteel>6</ChunkSlagSteel>
    </killedLeavings>	
	
  </ThingDef>
  
</Defs>