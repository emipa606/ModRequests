<?xml version="1.0" encoding="utf-8" ?>

<Defs>


	<!-- Transport Shuttle -->
	

<ThingDef ParentName="NECShipBase">
    <defName>TransportShuttle</defName>
    <label>Transport Shuttle</label> 
    <description>A spacer-tech shuttle designed for transit between surface and orbit, or between moons of a planetary system.

	Passenger cap: 1 - 12
	Travel speed: 25	  
	Space flight: Yes
	Fuel capacity: 450L
	Fuel efficiency: 2.25 per tile
	Maximum distance: 200 tiles
	Cargo cap: 1,000kg</description>

	<altitudeLayer>Building</altitudeLayer>
    <fillPercent>1.0</fillPercent>
	<pathCost>50</pathCost>
    <blockWind>false</blockWind>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <tickerType>Normal</tickerType>
    <canOverlapZones>true</canOverlapZones>	
    <selectable>true</selectable>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
    <drawerType>MapMeshOnly</drawerType>
    <repairEffect>ConstructMetal</repairEffect>
    <forceDebugSpawnable>true</forceDebugSpawnable>	
    <castEdgeShadows>false</castEdgeShadows>
	
    <graphicData>
      <texPath>TransportShuttle/TransportShuttle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6,6)</drawSize>
      <color>(162,164,149)</color>
      <shadowData>
        <volume>(4.1, 1.0, 1.8)</volume>
        <offset>(0, 0, -0.1)</offset>
      </shadowData>
    </graphicData>
	
    <size>(5,3)</size>
	
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>75000</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Mass>3500</Mass>
      <Beauty>25</Beauty>
    </statBases>
	
    <costList>
      <Steel>1000</Steel>
      <Plasteel>300</Plasteel>
      <Uranium>200</Uranium>
      <ComponentIndustrial>16</ComponentIndustrial>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
	
    <building>
      <claimable>false</claimable>
      <soundAmbient>ShuttleIdle_Ambience</soundAmbient>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>

	<comps>
	  
      <li Class="CompProperties_Transporter">
        <restEffectiveness>1</restEffectiveness>
        <massCapacity>1000</massCapacity>		
        <pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
        <pawnExitSound>Shuttle_PawnExit</pawnExitSound>		
      </li>
	  
      <li Class="SRTS.CompProperties_LaunchableSRTS">
        <travelSpeed>25</travelSpeed>
        <fuelPerTile>2.25</fuelPerTile>
        <minPassengers>1</minPassengers>
        <maxPassengers>12</maxPassengers>
        <spaceFaring>true</spaceFaring>
        <shuttleBayLanding>true</shuttleBayLanding>
      </li>
	  
      <li Class="CompProperties_Refuelable"> 
        <fuelCapacity>450</fuelCapacity>
        <targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
        <initialConfigurableTargetFuelLevel>150</initialConfigurableTargetFuelLevel>
        <fuelFilter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <initialFuelPercent>0.0</initialFuelPercent>
        <autoRefuelPercent>1</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
        <drawFuelGaugeInMap>false</drawFuelGaugeInMap>
      </li>
	  
      <li Class="CompProperties_Breakdownable" />
	  
      <li Class="CompProperties_Flickable" />
    </comps>
	<designationCategory>Transport</designationCategory>
    <researchPrerequisites>
      <li>Research_TransportShuttle</li>
    </researchPrerequisites>
	
    <constructionSkillPrerequisite>12</constructionSkillPrerequisite> 
	
    <uiIconScale>1.0</uiIconScale> 
	
    <killedLeavings>
      <Plasteel>75</Plasteel>
      <Uranium>50</Uranium>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>	
      <ChunkSlagSteel>4</ChunkSlagSteel>
    </killedLeavings>
  </ThingDef>

	<!-- Transport Drone -->
	
	
