<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!-- ======= Trait Specific Thoughts ========= -->
	<ThoughtDef>
		<defName>SuccessfulHunt</defName>
		<durationDays>1</durationDays>
			<requiredTraits>
				<li>HIF_Hunter</li>
			</requiredTraits>
			<stackLimit>1</stackLimit>
			<stages>
				<li>
					<label>successful hunt</label>
					<description>I had a successful hunting trip.</description>
					<baseMoodEffect>3</baseMoodEffect>
				</li>
			</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>FailedHunt</defName>
		<durationDays>1</durationDays>
			<requiredTraits>
				<li>HIF_Hunter</li>
			</requiredTraits>
			<stackLimit>1</stackLimit>
			<stages>
				<li>
					<label>failed hunt</label>
					<description>My hunting trip was a complete failure.</description>
					<baseMoodEffect>-6</baseMoodEffect>
				</li>
			</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>NoHuntingWeapon</defName>
		<durationDays>1</durationDays>
			<requiredTraits>
				<li>HIF_Hunter</li>
			</requiredTraits>
			<stackLimit>1</stackLimit>
			<stages>
				<li>
					<label>no hunting weapon</label>
					<description>I want to go hunting but don't have the right equipment.</description>
					<baseMoodEffect>-6</baseMoodEffect>
				</li>
			</stages>
	</ThoughtDef>
  
	<ThoughtDef>
		<defName>NoHuntableGame</defName>
		<durationDays>1</durationDays>
			<requiredTraits>
				<li>HIF_Hunter</li>
			</requiredTraits>
			<stackLimit>1</stackLimit>
			<stages>
				<li>
					<label>no game present</label>
					<description>There's no game worth hunting.</description>
					<baseMoodEffect>-4</baseMoodEffect>
				</li>
			</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>BadWeatherHunt</defName>
		<durationDays>1</durationDays>
			<requiredTraits>
				<li>HIF_Hunter</li>
			</requiredTraits>
			<stackLimit>1</stackLimit>
			<stages>
				<li>
					<label>cancelled hunting trip</label>
					<description>The weather ruined my plans to go hunting.</description>
					<baseMoodEffect>-2</baseMoodEffect>
				</li>
			</stages>
	</ThoughtDef>
	
		<ThoughtDef>
		<defName>UnableToHunt</defName>
		<durationDays>1</durationDays>
			<requiredTraits>
				<li>HIF_Hunter</li>
			</requiredTraits>
			<stackLimit>1</stackLimit>
			<stages>
				<li>
					<label>unable to hunt</label>
					<description>What if I can never hunt again?</description>
					<baseMoodEffect>-12</baseMoodEffect>
				</li>
			</stages>
	</ThoughtDef>

</Defs>
