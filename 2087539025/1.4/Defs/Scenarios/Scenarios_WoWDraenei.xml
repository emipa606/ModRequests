<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
		<defName>DraeneiScenario</defName>
		<label>Draenei - A Personal Exodus</label>
		<description>After a group of draenei, who would later become the Lightforged, split off from the Genedar in their own dimensional ship, the Xenedar, you decide that you should do the same. Working together to construct a rudimentary ship the three of you say your fairwells and depart to worlds unknown.</description>
		<scenario>
			<summary>An offshoot of draenei civilians choose to take their own path.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>Draenei_Player</factionDef>
			</playerFaction>
			<parts>

				<!-- Config pages -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>3</pawnCount>
                    <pawnChoiceCount>8</pawnChoiceCount>
				</li>

				<!-- Player starting stuff spawn method-->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>

				<!-- Starting research -->

				<!-- Player starting things -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>600</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MeleeWeapon_Gladius</thingDef>
					<stuff>Steel</stuff>
					<count>2</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Bow_Short</thingDef>
					<count>3</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pemmican</thingDef>
					<count>300</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineHerbal</thingDef>
					<count>20</count>
				</li>

				<!-- Scatter some things near player start -->
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>Steel</thingDef>
					<count>450</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>WoodLog</thingDef>
					<count>300</count>
				</li>

				<!-- Game start dialog -->
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>An offshoot of draenei civilians choose to take their own path.</text>
					<closeSound>GameStartSting</closeSound>
				</li>

			</parts>
		</scenario>
	</ScenarioDef>
  
</Defs>