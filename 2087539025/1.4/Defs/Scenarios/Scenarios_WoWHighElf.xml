<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
		<defName>HighElfScenario</defName>
		<label>High Elves - Honour the Past</label>
		<description>You are part of a handful of the few remaining high elves who refuse to take the name "blood" elf after the massacre during the Third War. No longer fitting in alongside your elven kin you have set out across the vast ocean of Azeroth to seek shelter in new lands.</description>
		<scenario>
			<summary>A group of quel'dorei looking to build a new home.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>HighElf_Player</factionDef>
			</playerFaction>
			<parts>

				<!-- Config pages -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>3</pawnCount>
                    <pawnChoiceCount>8</pawnChoiceCount>
				</li>

				<!-- Player starting stuff spawn method-->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>

				<!-- Starting research -->

				<!-- Player starting things -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>600</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MeleeWeapon_Gladius</thingDef>
					<stuff>Steel</stuff>
					<count>2</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Bow_Short</thingDef>
					<count>3</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pemmican</thingDef>
					<count>300</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineHerbal</thingDef>
					<count>20</count>
				</li>

				<!-- Scatter some things near player start -->
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>Steel</thingDef>
					<count>450</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>WoodLog</thingDef>
					<count>300</count>
				</li>

				<!-- Game start dialog -->
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>A group of quel'dorei looking to build a new home.</text>
					<closeSound>GameStartSting</closeSound>
				</li>

			</parts>
		</scenario>
	</ScenarioDef>
  
</Defs>