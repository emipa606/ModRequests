<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
		<defName>DwarfScenario</defName>
		<label>Dwarves - A Different Story</label>
		<description>The three of you have fled Stormwind, the human capital of Azeroth, after orcs invaded and razed it to the ground. You were barely able to board a ship and escape by sea, but have limited supplies to last your arrival in this strange, new land.</description>
		<scenario>
			<summary>Dwarf refugees fleeing the destroyed city of Stormwind.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>Ironforge_Player</factionDef>
			</playerFaction>
			<parts>

				<!-- Config pages -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>3</pawnCount>
                    <pawnChoiceCount>8</pawnChoiceCount>
				</li>

				<!-- Player starting stuff spawn method-->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>

				<!-- Starting research -->

				<!-- Player starting things -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>600</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MeleeWeapon_Gladius</thingDef>
					<stuff>Steel</stuff>
					<count>2</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Bow_Short</thingDef>
					<count>3</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pemmican</thingDef>
					<count>300</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineHerbal</thingDef>
					<count>20</count>
				</li>

				<!-- Scatter some things near player start -->
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>Steel</thingDef>
					<count>450</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>WoodLog</thingDef>
					<count>300</count>
				</li>

				<!-- Game start dialog -->
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>Human refugees fleeing the destroyed city of Stormwind.</text>
					<closeSound>GameStartSting</closeSound>
				</li>

			</parts>
		</scenario>
	</ScenarioDef>
  
</Defs>