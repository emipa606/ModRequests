<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[Ry]Rimcraft Allied Races</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ============================ Alliance ========================== -->
				<!-- ============================ VoidElf Player Pawn ========================== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<PawnKindDef ParentName="WoW_VoidElf_PawnkindBase">
							<defName>WoWVoidElf</defName>
							<label>void elf colonist</label>
							<combatPower>50</combatPower>
							<isFighter>false</isFighter>
							<defaultFactionType>PlayerColony</defaultFactionType>
							<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
							<forceNormalGearQuality>true</forceNormalGearQuality>
							<apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
							<apparelMoney>
								<min>350</min>
								<max>500</max>
							</apparelMoney>
							<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
						</PawnKindDef>
					</value>
				</li>
				<!-- ============================ VoidElf Player Pawn ========================== -->
				<!-- ============================ Alliance ========================== -->
				<!-- ============================ Horde ========================== -->
				<!-- ============================ Maghar Orc Player Pawn ========================== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<PawnKindDef ParentName="WoW_MagharOrc_PawnkindBase">
