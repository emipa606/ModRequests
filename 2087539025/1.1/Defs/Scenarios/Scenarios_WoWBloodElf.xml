<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
		<defName>BloodElfScenario</defName>
		<label>Blood Elves - Remember the Sunwell</label>
		<description>The undead Scourge have destroyed your beautiful city of Silvermoon and, with it, the fount of your power - the Sunwell. You managed to board a ship but damage to the vessel and a craving for arcane magic has taken its toll. You now find yourselves seeking refuge from the decimation on foreign ground.</description>
		<scenario>
			<summary>Sin'dorei citizens rebuilding after the Scourge assault on Quel'thalas.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>BloodElf_Player</factionDef>
			</playerFaction>
			<parts>

				<!-- Config pages -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>3</pawnCount>
                    <pawnChoiceCount>8</pawnChoiceCount>
				</li>

				<!-- Player starting stuff spawn method-->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>

				<!-- Starting research -->

				<!-- Player starting things -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>600</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MeleeWeapon_Gladius</thingDef>
					<stuff>Steel</stuff>
					<count>2</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Bow_Short</thingDef>
					<count>3</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pemmican</thingDef>
					<count>300</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineHerbal</thingDef>
					<count>20</count>
				</li>

				<!-- Scatter some things near player start -->
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>Steel</thingDef>
					<count>450</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>WoodLog</thingDef>
					<count>300</count>
				</li>

				<!-- Game start dialog -->
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>Sin'dorei citizens rebuilding after the Scourge assault on Quel'thalas.</text>
					<closeSound>GameStartSting</closeSound>
				</li>

			</parts>
		</scenario>
	</ScenarioDef>
  
</Defs>