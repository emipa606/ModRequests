<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[Ry]Rimcraft Factions</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
			
			   <!-- ============================ Alliance ========================== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/AlienRace.RaceSettings[defName="Rimcraft_Factions_RaceSettings"]/alienwandererkinds/li[1]/factionDefs</xpath>
					<value>
					   <li>Alliance_Player</li>
                  <li>HighElf_Player</li>
						<li>NightElf_Player</li>
						<li>Draenei_Player</li>
						<li>Ironforge_Player</li>
					</value>
				</li>
				<!-- ============================ Alliance ========================== -->
				
				
				<!-- ============================ Horde ========================== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/AlienRace.RaceSettings[defName="Rimcraft_Factions_RaceSettings"]/alienwandererkinds/li[2]/factionDefs</xpath>
					<value>
					   <li>BloodElf_Player</li>
                  <li>Forsaken_Player</li>
                  <li>Horde_Player</li>
                  <li>Troll_Player</li>
					</value>
				</li>
				<!-- ============================ Horde ========================== -->
				
			</operations>
		</match>
	</Operation>
</Patch>