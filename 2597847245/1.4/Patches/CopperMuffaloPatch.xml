<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="Copper"]</xpath>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- Leather -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs</xpath>
          <value>
            <ThingDef ParentName="LeatherBase">
              <defName>Leather_CopperMuffaloFur</defName>
              <label>copper muffalo fur</label>
              <description>The furry pelt of a copper muffalo. This leather has been enriched with copper. Good at temperature regulation in cold climates.</description>
              <graphicData>
                <color>(254,156,103)</color>
              </graphicData>
              <statBases>
                <MarketValue>2.1</MarketValue>
                <StuffPower_Insulation_Cold>16</StuffPower_Insulation_Cold>
                <StuffPower_Insulation_Heat>16</StuffPower_Insulation_Heat>
                <StuffPower_Armor_Blunt>0.24</StuffPower_Armor_Blunt>
                <StuffPower_Armor_Sharp>0.81</StuffPower_Armor_Sharp>
                <Mass>0.03</Mass>
                <MaxHitPoints>60</MaxHitPoints>
                <StuffPower_Armor_Heat>1.5</StuffPower_Armor_Heat>
              </statBases>
              <stuffProps>
                <color>(254,156,103)</color>
                <commonality>0.005</commonality>
                <statFactors>
                  <Beauty>1.3</Beauty>
                </statFactors>
              </stuffProps>
            </ThingDef>
          </value>
        </li>
        <!-- Animal thing -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs</xpath>
          <value>
            <ThingDef ParentName="AnimalThingBase">
              <defName>CopperMuffalo</defName>
              <label>copper muffalo</label>
              <description>A large herding herbivore descended from buffalo and adapted for both cold and warm environments. While enraged muffalo are deadly, tamed muffalo are quite docile and can be used as pack animals.\n\nThis muffalo has been genetically engineered to absorb trace amounts of copper from the ground and water sources.</description>
              <statBases>
                <MoveSpeed>4.5</MoveSpeed>
                <MarketValue>300</MarketValue>
                <ComfyTemperatureMin>-55</ComfyTemperatureMin>
                <ComfyTemperatureMax>45</ComfyTemperatureMax>
              </statBases>
              <uiIconScale>1.35</uiIconScale>
              <tools>
                <li>
                  <label>head</label>
                  <capacities>
                    <li>Blunt</li>
                  </capacities>
                  <power>13</power>
                  <cooldownTime>2.6</cooldownTime>
                  <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                  <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                </li>
                <li>
                  <label>left hoof</label>
                  <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                  </capacities>
                  <power>10</power>
                  <cooldownTime>2</cooldownTime>
                  <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
                </li>
                <li>
                  <label>right hoof</label>
                  <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                  </capacities>
                  <power>10</power>
                  <cooldownTime>2</cooldownTime>
                  <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
                </li>
                <li>
                  <capacities>
                    <li>Bite</li>
                  </capacities>
                  <power>10</power>
                  <cooldownTime>2</cooldownTime>
                  <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                  <chanceFactor>0.5</chanceFactor>
                </li>
              </tools>
              <comps>
                <li Class="CompProperties_Shearable">
                  <woolDef>Copper</woolDef>
                  <shearIntervalDays>25</shearIntervalDays>
                  <woolAmount>50</woolAmount>
                </li>
              </comps>
              <race>
                <herdAnimal>true</herdAnimal>
                <body>QuadrupedAnimalWithHooves</body>
                <baseBodySize>2.1</baseBodySize>
                <baseHealthScale>1.75</baseHealthScale>
                <baseHungerRate>0.85</baseHungerRate>
                <foodType>VegetarianRoughAnimal</foodType>
                <leatherDef>Leather_CopperMuffaloFur</leatherDef>
                <gestationPeriodDays>28</gestationPeriodDays>
                <wildness>0.6</wildness>
                <trainability>None</trainability>
                <packAnimal>true</packAnimal>
                <lifeExpectancy>15</lifeExpectancy>
                <lifeStageAges>
                  <li>
                    <def>AnimalBaby</def>
                    <minAge>0</minAge>
                  </li>
                  <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.25</minAge>
                  </li>
                  <li>
                    <def>AnimalAdult</def>
                    <minAge>0.5</minAge>
                    <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
                    <soundDeath>Pawn_Muffalo_Death</soundDeath>
                    <soundCall>Pawn_Muffalo_Call</soundCall>
                    <soundAngry>Pawn_Muffalo_Angry</soundAngry>
                  </li>
                </lifeStageAges>
                <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
                <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
                <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
              </race>
              <tradeTags>
                <li>AnimalCommon</li>
                <li>AnimalFarm</li>
              </tradeTags>
            </ThingDef>
          </value>
        </li>
        <!-- PawnKind -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs</xpath>
          <value>
            <PawnKindDef Name="CopperMuffalo" ParentName="AnimalKindBase">
              <defName>CopperMuffalo</defName>
              <label>copper muffalo</label>
              <race>CopperMuffalo</race>
              <combatPower>100</combatPower>
              <ecoSystemWeight>1.1</ecoSystemWeight>
              <wildGroupSize>3~9</wildGroupSize>
              <lifeStages>
                <li>
                  <label>Copper muffalo calf</label>
                  <labelPlural>Copper muffalo calves</labelPlural>
                  <bodyGraphicData>
                    <texPath>Muffalo/Muffalo</texPath>
                    <drawSize>1.5</drawSize>
                    <shadowData>
                      <volume>(0.4, 0.3, 0.3)</volume>
                      <offset>(0,0,-0.2)</offset>
                    </shadowData>
                    <color>(254,156,103)</color>
                  </bodyGraphicData>
                  <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Muffalo/Dessicated_Muffalo</texPath>
                    <drawSize>1.5</drawSize>
                  </dessicatedBodyGraphicData>
                </li>
                <li>
                  <bodyGraphicData>
                    <texPath>Muffalo/Muffalo</texPath>
                    <drawSize>2.25</drawSize>
                    <shadowData>
                      <volume>(0.6, 0.45, 0.45)</volume>
                      <offset>(0,0,-0.25)</offset>
                    </shadowData>
                    <color>(254,156,103)</color>
                  </bodyGraphicData>
                  <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Muffalo/Dessicated_Muffalo</texPath>
                    <drawSize>2.25</drawSize>
                  </dessicatedBodyGraphicData>
                </li>
                <li>
                  <bodyGraphicData>
                    <texPath>Muffalo/Muffalo</texPath>
                    <drawSize>3</drawSize>
                    <shadowData>
                      <volume>(0.8, 0.6, 0.6)</volume>
                      <offset>(0,0,-0.3)</offset>
                    </shadowData>
                    <color>(254,156,103)</color>
                  </bodyGraphicData>
                  <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Muffalo/Dessicated_Muffalo</texPath>
                    <drawSize>3</drawSize>
                  </dessicatedBodyGraphicData>
                </li>
              </lifeStages>
            </PawnKindDef>
          </value>
        </li>
        <!-- Egg -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs</xpath>
          <value>
            <ThingDef ParentName="MuffaloEggBase">
              <defName>EggCopperMuffaloFertilized</defName>
              <label>Copper muffalo egg (fert.)</label>
              <description>An fertilized egg containing a copper breed of muffalo.</description>
              <graphicData>
                <color>(254,156,103)</color>
              </graphicData>
              <comps>
                <li Class="CompProperties_Hatcher">
                  <hatcherDaystoHatch>1</hatcherDaystoHatch>
                  <hatcherPawn>CopperMuffalo</hatcherPawn>
                </li>
              </comps>
              <costList>
                <WoolMuffalo>100</WoolMuffalo>
                <MedicineUltratech>5</MedicineUltratech>
                <Copper>100</Copper>
              </costList>
            </ThingDef>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>