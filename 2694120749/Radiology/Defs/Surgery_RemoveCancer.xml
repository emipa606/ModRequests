<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef ParentName="SurgeryFlesh">
		<defName>RemoveRadiologyCancer</defName>
		<label>remove cancer</label>
		<description>Removes the cancer from the patient.</description>
		<workerClass>Recipe_RemoveHediff</workerClass>
		<jobString>Removing cancer.</jobString>
		<workAmount>4500</workAmount>
		<recipeUsers>
			<li>Human</li>
		</recipeUsers>
		<removesHediff>RadiologyCancer</removesHediff>
		<successfullyRemovedHediffMessage>{0} has successfully removed cancer from {1}.</successfullyRemovedHediffMessage>
		<surgerySuccessChanceFactor>0.9</surgerySuccessChanceFactor>
		<deathOnFailedSurgeryChance>0.5</deathOnFailedSurgeryChance>
		<skillRequirements>
			<Medicine>12</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>8</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<disallowedThingDefs>
				<li>MedicineHerbal</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
</Defs>