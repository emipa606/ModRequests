<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef ParentName="SurgeryFlesh">
		<defName>RemoveComaTimed</defName>
		<label>remove coma</label>
		<description>Brings the patient out of a coma.</description>
		<workerClass>Recipe_RemoveHediff</workerClass>
		<jobString>Removing coma.</jobString>
		<workAmount>6000</workAmount>
		<recipeUsers>
			<li>Human</li>
		</recipeUsers>
		<removesHediff>ComaTimed</removesHediff>
		<successfullyRemovedHediffMessage>{0} has successfully roused {1} from their coma.</successfullyRemovedHediffMessage>
		<surgerySuccessChanceFactor>0.7</surgerySuccessChanceFactor>
		<deathOnFailedSurgeryChance>0.8</deathOnFailedSurgeryChance>
		<skillRequirements>
			<Medicine>14</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<disallowedThingDefs>
				<li>MedicineHerbal</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
	
