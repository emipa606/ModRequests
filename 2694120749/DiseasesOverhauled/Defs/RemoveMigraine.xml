<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef ParentName="BrainSurgery">
		<defName>RemoveMigraine</defName>
		<label>cure chronic migraines</label>
		<description>Difficult brain surgery to stop recurring migraines.</description>
		<workerClass>Recipe_RemoveHediff</workerClass>
		<jobString>Curing chronic migraines.</jobString>
		<workAmount>6000</workAmount>
		<recipeUsers>
			<li>Human</li>
		</recipeUsers>
		<removesHediff>Migraine</removesHediff>
		<successfullyRemovedHediffMessage>{0} has successfully cured {1}'s chronic migraines.</successfullyRemovedHediffMessage>
		<surgerySuccessChanceFactor>0.7</surgerySuccessChanceFactor>
		<deathOnFailedSurgeryChance>0.2</deathOnFailedSurgeryChance>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<disallowedThingDefs>
				<li>MedicineHerbal</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
</Defs>