<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef ParentName="BrainSurgery">
		<defName>RemoveBardelSyndrome</defName>
		<label>cure Bardel Syndrome</label>
		<description>Difficult brain surgery to cure Bardel Syndrome.</description>
		<workerClass>Recipe_RemoveHediff</workerClass>
		<jobString>Curing Bardel Syndrome.</jobString>
		<workAmount>6000</workAmount>
		<recipeUsers>
			<li>Human</li>
		</recipeUsers>
		<removesHediff>BardelSyndrome</removesHediff>
		<successfullyRemovedHediffMessage>{0} has successfully cured {1}'s Bardel Syndrome.</successfullyRemovedHediffMessage>
		<surgerySuccessChanceFactor>0.6</surgerySuccessChanceFactor>
		<deathOnFailedSurgeryChance>0.3</deathOnFailedSurgeryChance>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<disallowedThingDefs>
				<li>MedicineHerbal</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
</Defs>