<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>AncientJeep_MainTurret</defName>
		<label>humvee m240</label>
		<description>A macnine gun turret mounted on a troop transport.</description>
		
		<turretType>Rotatable</turretType>
		<shotSound>Shot_Minigun</shotSound>
		
		<projectile>Bullet_LMG</projectile>
		<reloadTimer>3.5</reloadTimer>
		<warmUpTimer>0.4</warmUpTimer>
		
		<magazineCapacity>75</magazineCapacity>
		<genericAmmo>true</genericAmmo>
		
		<hitFlags>IntendedTarget</hitFlags>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>1.95</rotationSpeed>
		
		<projectileOffset>2.1</projectileOffset>
		<projectileShifting>
			<li>0.2</li>
			<li>-0.2</li>
		</projectileShifting>

		<maxRange>32.9</maxRange>
		
		<recoil>
			<distanceTotal>0.15</distanceTotal>
			<distancePerTick>0.05</distancePerTick>
			<speedMultiplierPostRecoil>0.1</speedMultiplierPostRecoil>
		</recoil>
		
		<attachProjectileFlag MayRequire="oskarpotocki.vanillavehiclesexpanded">VVE_Tank</attachProjectileFlag>
		
		<fireModes>
			<li>
				<shotsPerBurst>6</shotsPerBurst>
				<ticksBetweenShots>7</ticksBetweenShots>
				<ticksBetweenBursts>60</ticksBetweenBursts>
				<spreadRadius>1</spreadRadius>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
		</fireModes>

		<graphicData>
			<texPath>Vehicles/AncientJeep/AncientJeep_CannonTop</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(2, 2)</drawSize>
		</graphicData>
		
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
	</Vehicles.VehicleTurretDef>
</Defs>