<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <MainButtonDef>
    <defName>Animals</defName>
    <label>animals</label>
    <description>Configure how the colony's tame animals should be treated.</description>
    <tabWindowClass>AnimalTab.MainTabWindow_Animals</tabWindowClass>
    <order>40</order>
    <defaultHotKey>F4</defaultHotKey>
  </MainButtonDef>

  <PawnColumnDef>
    <defName>AnimalTabLabel</defName>
    <workerClass>AnimalTab.PawnColumnWorker_Label</workerClass>
    <widthPriority>100</widthPriority>
  </PawnColumnDef>

  <PawnColumnDef>
    <defName>AnimalTabAllowedArea</defName>
    <label>allowed area</label>
    <workerClass>AnimalTab.PawnColumnWorker_AllowedArea</workerClass>
    <sortable>true</sortable>
  </PawnColumnDef>

  <PawnColumnDef>
    <defName>Wool</defName>
    <workerClass>AnimalTab.PawnColumnWorker_Wool</workerClass>
    <sortable>true</sortable>
    <headerIcon>UI/Icons/Animal/Wool</headerIcon>
    <headerTip>Wool progress</headerTip>
  </PawnColumnDef>

  <PawnColumnDef>
    <defName>Milk</defName>
    <workerClass>AnimalTab.PawnColumnWorker_Milk</workerClass>
    <sortable>true</sortable>
    <headerIcon>UI/Icons/Animal/Milk</headerIcon>
    <headerTip>Milk progress</headerTip>
  </PawnColumnDef>

  <PawnColumnDef>
    <defName>Meat</defName>
    <workerClass>AnimalTab.PawnColumnWorker_Meat</workerClass>
    <sortable>true</sortable>
    <headerIcon>UI/Icons/Animal/Meat</headerIcon>
    <headerTip>Expected meat amount</headerTip>
  </PawnColumnDef>

</Defs>