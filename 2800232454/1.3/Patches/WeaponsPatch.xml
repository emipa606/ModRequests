<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_Hammer"]/weaponTags</xpath>
					<value>
					          <li>Buildermelee</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_Shovel"]/weaponTags</xpath>
					<value>
					          <li>Farmermelee</li>
					</value>
				</li>	
					<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_Scalpel"]/weaponTags</xpath>
					<value>
					          <li>Doctormelee</li>
					</value>
				</li>	
					<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_Pickaxe"]/weaponTags</xpath>
					<value>
					          <li>Miningmelee</li>
					</value>
				</li>	
					<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_Cleaver"]/weaponTags</xpath>
					<value>
					          <li>Chefmelee</li>
					</value>
				</li>			
			</operations>
		</match>
	</Operation>

</Patch>