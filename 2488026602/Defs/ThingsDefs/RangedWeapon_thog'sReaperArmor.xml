<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="ApparelBase">
    <defName>Apparel_ArmorReaper</defName>
    <label>reaper armor</label>
    <description>A striking combination of a hyperweave-threaded bullet resistant duster combined with a pair of souped up scout armor, providing a defense that's near equal to a full suit of power armor, while maintaining manueverability. Plus, it's almost entirely flame retardant to boot.</description>

    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Weapon/Duster/Duster</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <Mass>9.5</Mass>
	  <MarketValue>3120</MarketValue>
      <Flammability>0</Flammability>
      <ArmorRating_Sharp>1.15</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.56</ArmorRating_Blunt>
      <ArmorRating_Heat>.9</ArmorRating_Heat>
      <Insulation_Cold>32</Insulation_Cold>
      <Insulation_Heat>24</Insulation_Heat>
      <EquipDelay>11</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ToxicSensitivity>-0.5</ToxicSensitivity>
    </equippedStatOffsets>
    <thingCategories>
      <li>ReaperArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Weapon/Duster/Duster</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>ReaperArmor</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
    <comps>
      <li Class="CompProperties_BiocodableApparel"/>
    </comps>
	</ThingDef>
 </Defs>