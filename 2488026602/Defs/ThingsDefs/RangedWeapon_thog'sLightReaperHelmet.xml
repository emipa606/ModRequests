<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="ApparelBase">
    <defName>Apparel_ArmorLightHelmetReaper</defName>
    <label>light reaper helmet</label>
    <description>A modified Recon helmet often worn by members of the Reapers, equipped with an aftermarket face protector, sub-prof AI aim tracker and air filtration system in order to allow its wearer to survive in inhospitable conditions. It provies less protection than the normal reaper helmets, but it more than makes up for it.</description>

    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Weapon/LightReaperHelmet/LightReaperHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>1.2</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>1</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.52</ArmorRating_Blunt>
      <ArmorRating_Heat>.88</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
	<equippedStatOffsets>
	  <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
      <ToxicSensitivity>-0.5</ToxicSensitivity>
    </equippedStatOffsets>
	<costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>30</Plasteel>
    </costList>
    <apparel>
	  <tags>
        <li>ReaperHelmet</li>
      </tags>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Weapon/LightReaperHelmet/LightReaperHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(.2,.2,.2,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
 </Defs>