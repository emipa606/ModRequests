<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ====================================== 衣服基础 =========================================== -->
  
  <ThingDef Name="TW_ApparelBase" ParentName="ApparelBase" Abstract="True">
  	<techLevel>Medieval</techLevel>
	<tradeability>Sellable</tradeability>
    <generateCommonality>1</generateCommonality>
	
	<thingCategories>
		<li>Apparel</li>
	</thingCategories>
  
    <recipeMaker>
      <researchPrerequisite>TW_Guofeng</researchPrerequisite>		
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
	  <recipeUsers Inherit="False">
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
  
  <!-- ====================================== 盔甲基础 =========================================== -->  
  
    <ThingDef Name="TW_ArmorBase" ParentName="ApparelBase" Abstract="True">
    <smeltable>true</smeltable>
    <recipeMaker>
	  <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
      <researchPrerequisite>TW_Melting</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers Inherit="False">
        <li>TW_ArmorTable</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
	
	<techLevel>Medieval</techLevel>
	<tradeability>Sellable</tradeability>
	<generateCommonality>1</generateCommonality>
	<thingCategories>
		<li>TW_Armor</li>
	</thingCategories>
	
	<apparel>
	 <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
	 <tags>
		<li>TW_Armor</li>
	 </tags>
	</apparel>
	
  </ThingDef>
  
