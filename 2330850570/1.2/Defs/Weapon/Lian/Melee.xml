          <li>Stab</li>
        </capacities>
        <power>13</power>
		<armorPenetration>0.35</armorPenetration>
        <cooldownTime>1.8</cooldownTime>
      </li>
	  <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2</cooldownTime>
      </li>	
    </tools>
	
    </ThingDef>

