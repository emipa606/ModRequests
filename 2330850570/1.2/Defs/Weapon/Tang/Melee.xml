  <ThingDef ParentName="TW_Blunt_MeleeBase">
	<defName>TW_GuDuo</defName>
	<label>骨朵</label>
	<description>非常适合击打的短锤武器，锤头往往会镶嵌铁珠强化破甲能力。</description>
	<graphicData>
		<texPath>Things/Weapon/Tang/TW_Tang_Mace</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
    <uiIconScale>1.2</uiIconScale>
	
	<costList>
    <Steel>25</Steel>
	<WoodLog>10</WoodLog>	
    </costList>

    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>2.7</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>

    <weaponTags>
      <li>Tang_ShortMelee</li>
    </weaponTags>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
	<skillRequirements>
	<Crafting>3</Crafting>
	</skillRequirements>
	</recipeMaker>	
  </ThingDef>
  
