<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="TW_HelmetBase">
    <defName>TW_QHelmet_Heavy</defName>
    <label>重头盔</label>
    <description>用铁片和布条衔接而成的头盔，能很好的保护头部。</description>
    <thingClass>Apparel</thingClass>

        <graphicData>
            <texPath>Things/Apparel/Helmet/Qin/QHelmet_Heavy</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
        </graphicData>
		
    <statBases>
      <WorkToMake>3500</WorkToMake>
      <MaxHitPoints>75</MaxHitPoints>
      <Mass>2</Mass>
      <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Heat>0</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
	
    <recipeMaker>
        <skillRequirements>
         <Crafting>3</Crafting>
        </skillRequirements>
    </recipeMaker>		
	
    <costList>
      <Steel>35</Steel>
    </costList>
	
    <apparel>
    <bodyPartGroups>
        <li>UpperHead</li>
    </bodyPartGroups>
        <wornGraphicPath>Things/Apparel/Helmet/Qin/QHelmet_Heavy</wornGraphicPath>
    </apparel>

    </ThingDef>
	
