<Defs>

<ThingDef ParentName="TW_HelmetBase">
    <defName>TW_THelmet_zp</defName>
    <label>玄铁札片盔</label>
    <description>札甲片制作成的头盔，外面刷上黑漆，可以很好的保护头部。</description>
    <thingClass>Apparel</thingClass>

    <graphicData>
        <texPath>Things/Apparel/Helmet/Tang/THelmet_zp</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <shaderType>Transparent</shaderType>
    </graphicData>
		
	<recipeMaker>
        <skillRequirements>
            <Crafting>5</Crafting>
        </skillRequirements>
    </recipeMaker>		
		
    <statBases>
      <WorkToMake>10500</WorkToMake>
      <MaxHitPoints>75</MaxHitPoints>
      <Mass>3</Mass>
      <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Heat>0</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
	
    <costList>
      <Steel>45</Steel>
    </costList>
	
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
        <li>Neck</li>		
      </bodyPartGroups>
        <wornGraphicPath>Things/Apparel/Helmet/Tang/THelmet_zp</wornGraphicPath>
    </apparel>

    </ThingDef>
	
