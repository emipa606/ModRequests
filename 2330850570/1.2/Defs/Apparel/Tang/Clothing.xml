<?xml version="1.0" encoding="utf-8"?>
<Defs> 

	<ThingDef ParentName="ApparelBase">
		<defName>TW_Pao</defName>
		<label>缺胯衫（黑）</label>
		<description>圆领袍子，腰部有开口方便活动，有着出席各种场面的变种，是非常万能的服饰。</description>
		<graphicData>
			<texPath>Things/Apparel/Clothing/Tang/Pao</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>1</generateCommonality>

        <costList>
		<Cloth>35</Cloth>
        </costList>
	
		<statBases>
			<MaxHitPoints>230</MaxHitPoints>
			<WorkToMake>3500</WorkToMake>
			<Mass>1</Mass>
        <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
        <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
        <ArmorRating_Heat>0.1</ArmorRating_Heat>
        <Insulation_Cold>5</Insulation_Cold>
        <Insulation_Heat>0</Insulation_Heat>
        <EquipDelay>3</EquipDelay>
		</statBases>
		
		<equippedStatOffsets>
			<SocialImpact>0.05</SocialImpact>
		</equippedStatOffsets>
		
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Waist</li>				
			</bodyPartGroups>
			<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
			<wornGraphicPath>Things/Apparel/Clothing/Tang/Pao</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
	  <tags>
        <li>TangCloth_A</li>
      </tags>
		</apparel>
		<recipeMaker>
	        <researchPrerequisite>TW_Guofeng</researchPrerequisite>		
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>			
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>
	
	<ThingDef ParentName="ApparelMakeableBase">
    <defName>Tang_Pants</defName>
    <label>裈</label>
    <description>裆部做的很宽松的贴身裤，方便骑马等活动。</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Clothing/Tang/Tang_Pants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
		<Cloth>15</Cloth>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1600</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>TangCloth_A</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

</Defs>		