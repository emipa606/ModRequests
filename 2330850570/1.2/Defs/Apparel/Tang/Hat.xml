        <categories>
          <li>Root</li>
        </categories>
      </defaultIngredientFilter>
    </recipeMaker>
	
    <thingCategories>
      <li>ArmorHeadgear</li>
    </thingCategories>
	
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
            <wornGraphicPath>Things/Apparel/Hat/Tang/Fu</wornGraphicPath>
    </apparel>

    </ThingDef>	

