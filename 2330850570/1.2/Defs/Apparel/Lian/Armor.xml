<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<ThingDef ParentName="ApparelBase">
		<defName>TW_Lian_ChainShirt</defName>
		<label>链甲衣</label>
		<description>用细密的铁环和铁丝编织的衣服，能够很好的抵御割伤。</description>
		<graphicData>
			<texPath>Things/Apparel/Armor/Lian/ChainShirt</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>1</generateCommonality>
	
		<statBases>
			<MaxHitPoints>230</MaxHitPoints>
			<WorkToMake>7500</WorkToMake>
			<Mass>5</Mass>
        <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
        <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
        <ArmorRating_Heat>0.0</ArmorRating_Heat>
        <Insulation_Cold>1</Insulation_Cold>
        <Insulation_Heat>0</Insulation_Heat>
        <EquipDelay>3</EquipDelay>
		</statBases>
		
		<thingCategories>
			<li>TW_Armor</li>
		</thingCategories>
		
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Waist</li>
			</bodyPartGroups>
			<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
			<wornGraphicPath>Things/Apparel/Armor/Lian/ChainShirt</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
		</apparel>

	</ThingDef>
	
