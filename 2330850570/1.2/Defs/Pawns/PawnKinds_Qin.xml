<Defs>
  
  <PawnKindDef>
    <defName>Qin_BasicSoldier</defName>
    <label>科头公士</label>
	<race>Human</race>
    <defaultFactionType>Qin</defaultFactionType>
	<combatPower>35</combatPower>
	<minGenerationAge>20</minGenerationAge>
    <maxGenerationAge>45</maxGenerationAge>
	
<!-- 背景 -->
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>ImperialFighter</li>
        </categories>
      </li>
    </backstoryFiltersOverride>

    <chemicalAddictionChance>0.1</chemicalAddictionChance>
    <combatEnhancingDrugsChance>0.15</combatEnhancingDrugsChance>
    <combatEnhancingDrugsCount>0~2</combatEnhancingDrugsCount>
    <invNutrition>2.55</invNutrition>
    <itemQuality>Normal</itemQuality>
	<canBeSapper>true</canBeSapper>
	<baseRecruitDifficulty>0.8</baseRecruitDifficulty>
    <factionHostileOnDeath>true</factionHostileOnDeath>
	
<!-- 武器 -->
    <weaponMoney>2100~3500</weaponMoney>
    <weaponTags Inherit="False">
      <li>Qin_LongMelee</li>
    </weaponTags>
    <biocodeWeaponChance>0</biocodeWeaponChance>
<!-- 假肢 -->
    <techHediffsChance>0.3</techHediffsChance>
    <techHediffsMoney>1000~1500</techHediffsMoney>
<!-- 服装 -->
	<apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
    <apparelMoney>3500~7500</apparelMoney>
    <apparelTags>
		<li>TangCloth_A</li>
    </apparelTags>

	<apparelRequired>
	  <li>TW_QClothing</li>
	  <li>TW_QArmor</li>
	  <li>TW_QScarf</li>
    </apparelRequired>

	  <inventoryOptions>
		  <skipChance>0.7</skipChance>

		  <subOptionsChooseOne>
			  <li>
				  <thingDef>Qin_Slip</thingDef>
				  <countRange>
					  <min>0</min>
					  <max>1</max>
				  </countRange>
			  </li>
			  <li>
				  <thingDef>Qin_Comb</thingDef>
				  <countRange>
					  <min>0</min>
					  <max>1</max>
				  </countRange>
			  </li>
		  </subOptionsChooseOne>

	  </inventoryOptions>

    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>

    <techHediffsMaxAmount>3</techHediffsMaxAmount>
  </PawnKindDef>
  
