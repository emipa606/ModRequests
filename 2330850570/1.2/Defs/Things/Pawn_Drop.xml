    <ThingDef ParentName="ResourceBase">
    <defName>Lian_Paper</defName>
    <label>莲花之印</label>
    <description>邪教徒随身携带的纸片，是他们传播和炫耀的工具，可以直接用来交换白银。</description>
    <graphicData>
      <texPath>Things/Misc/Lian/TW_Lian_Paper</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>(0.6,0.6)</drawSize>	  
    </graphicData>
    <resourceReadoutPriority>First</resourceReadoutPriority>
    <soundInteract>Silver_Drop</soundInteract>
    <soundDrop>Silver_Drop</soundDrop>
    <useHitPoints>true</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <resourceReadoutAlwaysShow>true</resourceReadoutAlwaysShow>	
	
    <statBases>
      <MarketValue>5</MarketValue>
      <Mass>0.01</Mass>
      <MaxHitPoints>50</MaxHitPoints>	  
      <Flammability>1</Flammability>	  
    </statBases>
	
    <thingCategories>
      <li>Items</li>
    </thingCategories>
	
    <stackLimit>100</stackLimit>
	
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>

    <tradeability>Sellable</tradeability>	
    <smallVolume>true</smallVolume>
    <deepCommonality>0.5</deepCommonality>
    <deepCountPerPortion>70</deepCountPerPortion>
    <deepLumpSizeRange>2~10</deepLumpSizeRange>
    <burnableByRecipe>false</burnableByRecipe>

    </ThingDef>
  
