<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="TW_ArmorBase">
		<defName>TW_StrawRainCape</defName>
		<label>蓑衣</label>
		<description>用干草或者各种草料编制而成的蓑衣，可以防止身体淋湿，并且也不会妨碍活动。</description>
		<graphicData>
			<texPath>Things/Apparel/Clothing/Others/TW_StrawRainCape</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>

		<recipeMaker>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>

		<costList>
			<Hay>35</Hay>
			<Cloth>5</Cloth>
		</costList>


		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>2</Mass>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ArmorRating_Heat>2</ArmorRating_Heat>
			<Insulation_Cold>1</Insulation_Cold>
			<Insulation_Heat>0</Insulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>

		<equippedStatOffsets>
			<MoveSpeed>-0.1</MoveSpeed>
			<PainShockThreshold>0.05</PainShockThreshold>
		</equippedStatOffsets>
		<thingCategories>
			<li>SZ_Cat_BaiXingClothes</li>
		</thingCategories>
		<apparel>
			<tags>
			<li>TW_Qin_PingMin</li>
			<li>TW_Tang_PingMin</li>
		</tags>	
			<bodyPartGroups>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Clothing/Others/TW_StrawRainCape</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
		</apparel>

	</ThingDef>

</Defs>		