<Defs>

    <ThingDef ParentName="TW_Sharp_MeleeBase">
    <defName>TW_Qin_Pi</defName>
    <label>铍</label>
    <description>矛和剑的结合体，早期为銎装，后来慢慢变为铤装，破甲能力强大，之后被槊淘汰。</description>
    <graphicData>
      <texPath>Things/Weapon/Qin/TW_Qin_Pi</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <statBases>
      <WorkToMake>8000</WorkToMake>
      <Mass>3.7</Mass>
    </statBases>

    <equippedAngleOffset>-45</equippedAngleOffset>
	
        <costList>
        <Steel>35</Steel>
        <WoodLog>25</WoodLog>		
        </costList>
		
	<weaponTags>
		<li>Qin_LongMelee</li>
	</weaponTags>
	
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>13</power>
		<armorPenetration>0.35</armorPenetration>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
      </li>	  
    </tools>
    <recipeMaker>
	<skillRequirements>
	<Crafting>3</Crafting>
	</skillRequirements>
	</recipeMaker>
	
    </ThingDef>
	
