<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--==================================== 弩 ====================================-->

  <ThingDef ParentName="TW_RangeBase">
    <defName>TW_ZhuNu</defName>
    <label>竹竿弩</label>
    <description>尽管唐代已经不再流行弩，但还是流传了不少分类，主要用于打猎，镇压暴乱等用途。不论是精度，射程还是威力都一般，需要较长时间装填。</description>
    <graphicData>
      <texPath>Things/Weapon/Tang/ZhuNu</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <costList>
      <WoodLog>50</WoodLog>
      <Steel>15</Steel>	  
    </costList>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>3.0</Mass>
      <AccuracyTouch>0.5</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>Tang_Range</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>TW_ArrowNu</defaultProjectile>
        <warmupTime>0.1</warmupTime>
        <range>27</range>
        <soundCast>Bow_Large</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
        <cooldownTime>5</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
  
