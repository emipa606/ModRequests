<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="OrganicProductBase">
    <defName>BloodItem</defName>
    <label>blood</label>
    <description>Blood from a once living thing.</description>
    <graphicData>
      <texPath>Things/Item/Resource/BloodRaw</texPath>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>1.0</MarketValue>
      <Mass>0.5</Mass>
      <MaxHitPoints>10</MaxHitPoints>
      <Flammability>0.2</Flammability>
      <FoodPoisonChanceFixedHuman>0.5</FoodPoisonChanceFixedHuman>
      <Nutrition>0.03</Nutrition>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>6</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <preferability>RawBad</preferability>
      <foodType>AnimalProduct, Fluid</foodType>
    </ingestible>
    <thingCategories>
      <li>AnimalProductRaw</li>
    </thingCategories>
  </ThingDef>

</Defs>