<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BenchBase">
    <defName>BloodAltar</defName>
    <label>blood altar</label>
    <description>Using spooky magic at this spooky altar, it is possible to create bloodcrete.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/BloodAltar/BloodAltar</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <costList>
      <Steel>25</Steel>
      <BloodItem>50</BloodItem>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <WorkToBuild>80</WorkToBuild>
      <WorkTableWorkSpeedFactor>1</WorkTableWorkSpeedFactor>
      <Cleanliness>-10</Cleanliness>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>false</useHitPoints>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <researchPrerequisites>
      <li>BloodRefinement</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>