<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>IA_Apparel_CombatVest</defName>
		<label>combat vest</label>
		<description>A modern military combat vest made for civilian use. It features flexibility using hybrid weaving of leathers.</description>
		<graphicData>
			<texPath>IndustrialArmory/CombatVest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<costStuffCount>50</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costList>
			<Cloth>20</Cloth>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<Flammability>0.75</Flammability>
			<MarketValue>250</MarketValue>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>9000</WorkToMake>
			<Mass>3</Mass>
			<StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>IndustrialArmory/CombatVest</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>IndustrialBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>IA_HardLeatherArmors</researchPrerequisite>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>

