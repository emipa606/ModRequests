<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="HatBase">
    <defName>Apparel_DahlMarineHelmet</defName>
    <label>DAHL marine helmet</label>
    <description>A protective headgear worn by DAHL troopers.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Apparel/DahlMarineHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
		<statBases>
			<WorkToMake>200</WorkToMake>
			<MaxHitPoints>250</MaxHitPoints>
			<MarketValue>750</MarketValue>
			<Mass>2.7</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.9</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
	<equippedStatOffsets>
		<ToxicSensitivity>-0.50</ToxicSensitivity>
	</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/DahlMarineHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>DahlMarineHelmet</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>100</weight>
				<only>(1,1,1,1)</only>
			</li>
		</options>
	</colorGenerator>
  </ThingDef>
 
  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_DahlMarineArmor</defName>
    <label>DAHL marine armor</label>
    <description>A sturdy and light armor used by DAHL forces. It allows great mobility and gives a moderate enviromental protection.</description>
    <graphicData>
      <texPath>Apparel/DahlMarineArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <generateCommonality>0.2</generateCommonality>

		<statBases>
			<WorkToMake>300</WorkToMake>
			<MaxHitPoints>350</MaxHitPoints>
			<MarketValue>1000</MarketValue>
			<Mass>3.5</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.9</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>0.4</ArmorRating_Heat>
      <Insulation_Cold>25</Insulation_Cold>
      <Insulation_Heat>8</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
	<equippedStatOffsets>
		<ToxicSensitivity>-0.50</ToxicSensitivity>
	</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/DahlMarineArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>DahlMarineArmor</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>100</weight>
				<only>(1,1,1,1)</only>
			</li>
		</options>
	</colorGenerator>
  </ThingDef>
 
 
</Defs>