<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Loader -->


  <ThingDef ParentName="BaseMechanoidWalker">
    <defName>Mech_HyperionLoader</defName>
    <label>Hyperion loader</label>
    <description>Loaders supplement and make up the bulk of Hyperion's forces, but not the entirety of them, as human soldiers and support units also work alongside them. Loaders are highly versatile, serving a variety of roles ranging from basic infantry, to snipers, to air forces.</description>
    <statBases>
      <MoveSpeed>4.7</MoveSpeed>
      <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
    </statBases>
    <tools>
      <li>
        <label>left wrist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>right wrist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
    </tools>
    <race>
      <body>Loader</body>
      <packAnimal>true</packAnimal>
      <baseBodySize>1.5</baseBodySize>
      <baseHealthScale>1.5</baseHealthScale>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="BaseMechanoidKind">
    <defName>Mech_HyperionLoader</defName>
    <label>Hyperion loader</label>
    <race>Mech_HyperionLoader</race>
    <defaultFactionType>Hyperion</defaultFactionType>
    <combatPower>160</combatPower>
    <lifeStages>
      <li>
		<bodyGraphicData>
          <texPath>Animals/Loader</texPath>
          <drawSize>2.5</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>
      <min>0</min>
      <max>0</max>
    </weaponMoney>
    <weaponTags>
    </weaponTags>
  </PawnKindDef>
 
</Defs>