<?xml version="1.0" encoding="utf-8" ?>
<Defs>


<!-- Ranged weapons -->

  <ThingDef ParentName="BaseGunWithQuality">
    <defName>Gun_HyperionPistol</defName>
    <label>hyperion pistol</label>
    <description>[ Hyperion weapons are typically more accurate than other brands. ] A high caliber handgun, capable of piercing armor and knocking brains out.</description>
    <graphicData>
      <texPath>Weapons/HyperionPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
	  <WorkToMake>150</WorkToMake>
	  <MarketValue>300</MarketValue>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.78</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
	
    <weaponTags>
      <li>HyperionPistol</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HyperionPistol</defaultProjectile>
        <warmupTime>0.25</warmupTime>
        <range>28</range>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HyperionPistol</defName>
    <label>hyperion pistol bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>

