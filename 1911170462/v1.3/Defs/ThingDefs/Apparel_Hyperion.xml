<?xml version="1.0" encoding="utf-8" ?>
<Defs>
   
<ThingDef ParentName="HatBase">
    <defName>Apparel_HyperionScoutHelmet</defName>
    <label>hyperion scout helmet</label>
    <description>A Hyperion-manufactured light recon helmet.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Apparel/HyperionScoutHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
		<statBases>
			<WorkToMake>150</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>300</MarketValue>
			<Mass>1.2</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.80</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Heat>0.4</ArmorRating_Heat>
      <Insulation_Cold>2</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
		<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/HyperionScoutHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>HyperionClothing</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>100</weight>
				<only>(1,1,1,1)</only>
			</li>
		</options>
	</colorGenerator>
  </ThingDef>
 
