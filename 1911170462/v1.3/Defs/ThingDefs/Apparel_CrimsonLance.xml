<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="HatBase">
    <defName>Apparel_CrimsonLanceHelmet</defName>
    <label>crimson lance helmet</label>
    <description>A protective headgear worn by Crimson Lance troopers. It is sturdy and it's equipped with a filtering gas mask.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Apparel/CrimsonLanceHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
		<statBases>
			<WorkToMake>150</WorkToMake>
			<MaxHitPoints>250</MaxHitPoints>
			<MarketValue>750</MarketValue>
			<Mass>2.7</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.9</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
	<equippedStatOffsets>
		<ToxicSensitivity>-0.25</ToxicSensitivity>
		<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
	</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/CrimsonLanceHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>CrimsonLanceHelmet</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>100</weight>
				<only>(1,1,1,1)</only>
			</li>
		</options>
	</colorGenerator>
  </ThingDef>
 
