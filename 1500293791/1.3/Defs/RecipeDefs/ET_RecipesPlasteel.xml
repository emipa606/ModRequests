<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>ET_Make_Plasteel</defName>
    <label>refine plasteel</label>
    <description>Refine plasteel from steel and chemfuel.</description>
    <jobString>Refining plasteel.</jobString>
	<recipeUsers>
		<li>ElectricSmelter</li>
	</recipeUsers>	
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>5000</workAmount>
	<workSkillLearnFactor>0.75</workSkillLearnFactor>	
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Plasteel>10</Plasteel>
    </products>
    <researchPrerequisite>ET_RefinePlasteel_Research</researchPrerequisite>
    <skillRequirements>
      <Crafting>10</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>
  
</Defs>
