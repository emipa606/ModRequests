	<ResearchProjectDef>
		<defName>ET_Neutroamine_Research</defName>
		<label>Neutroamine Synthesis</label>
		<description>Learn how to synthesize neutroamine from psychoid leaves and herbal medicine. Neutroamine is an ingredient for further medicine and drugs.</description>
		<baseCost>3000</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>PsychiteRefining</li>
			<li>MedicineProduction</li>
		</prerequisites>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<researchViewX>1</researchViewX>
		<researchViewY>2</researchViewY>
		<tab>ETResearch</tab>
	</ResearchProjectDef>
	
	<ResearchProjectDef>
		<defName>ET_Luciferium_Research</defName>
		<label>Luciferium Synthesis</label>
		<description>Learn how to synthesize luciferium from psychoid leaves and neutroamine. Luciferium is a powerful, but lethally addictive enhancement drug.</description>
		<baseCost>4000</baseCost>
		<techLevel>Spacer</techLevel>
		<prerequisites>
			<li>ET_Neutroamine_Research</li>
		</prerequisites>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
		  <li>MultiAnalyzer</li>
		</requiredResearchFacilities>
		<researchViewX>2</researchViewX>
		<researchViewY>2</researchViewY>
		<tab>ETResearch</tab>		
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>ET_Ultratech_Research</defName>
		<label>Ultratech Medicine Production</label>
		<description>Produce the best possible medicine, combining neutroamine, luciferium and medicine. Requires a highly skilled medical professional.</description>
		<baseCost>6000</baseCost>
		<techLevel>Spacer</techLevel>
		<prerequisites>
			<li>ET_Luciferium_Research</li>
		</prerequisites>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
		  <li>MultiAnalyzer</li>
		</requiredResearchFacilities>
		<researchViewX>3</researchViewX>
		<researchViewY>2</researchViewY>
		<tab>ETResearch</tab>		
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>ET_RefinePlasteel_Research</defName>
		<label>Plasteel Refining</label>
		<description>Refine plasteel from steel and chemfuel. A labor intensive process, but a necessary one if we wish to produce advanced equipment.</description>
		<baseCost>5000</baseCost>
