<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Prestige Hood -->

  <ThingDef ParentName="HatMakeableBase">
    <defName>ET_PrestigeHood</defName>
    <label>embroidered hood</label>
    <description>A gold-embroidered draped hood which covers the head and ears.</description>
	<recipeMaker>
		<researchPrerequisite>NobleApparel</researchPrerequisite>
	</recipeMaker>	
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Hood/Hood</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Mass>0.1</Mass>
      <EquipDelay>0.8</EquipDelay>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.2</SocialImpact>
    </equippedStatOffsets>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
      <Gold>5</Gold>
    </costList>	
    <apparel>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Hood/Hood</wornGraphicPath>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
		<li>Royal</li>
		<li>RoyalTier2</li>
        <li>BestowerHood</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
	
</Defs>
