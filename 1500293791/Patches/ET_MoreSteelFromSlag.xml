<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>Increase steel from smelting slags:</label>
		<mods>
			<li>Evil Tactician's RimWorld Tweaks</li>
		</mods>
		<!-- Increased Smelting Slag Output -->
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName="ExtractMetalFromSlag"]/products/Steel</xpath>
				<value>
					<Steel>50</Steel>
				</value>
			</li>		
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName="ExtractMetalFromSlag"]/workAmount</xpath>
				<value>
					<workAmount>1200</workAmount>
				</value>
			</li>	
		</operations>	
	</Operation>
</Patch>