<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<!-- Room Size Tweaks -->

	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>Room Size Tweaks</label>
		<mods>
			<li>Evil Tactician's RimWorld Tweaks</li>
		</mods>
		<operations>	
			<li Class="PatchOperationReplace">
				<xpath>Defs/RoomStatDef[defName="Space"]/scoreStages</xpath>
					<value>
						<scoreStages>
						  <li>
							<label>cramped</label>
						  </li>
						  <li>
							<minScore>7.5</minScore>
							<label>rather tight</label>
						  </li>
						  <li>
							<minScore>16.5</minScore>
							<label>average-sized</label>
						  </li>
						  <li>
							<minScore>28.5</minScore>
							<label>somewhat spacious</label>
						  </li>
						  <li>
							<minScore>49.5</minScore>
							<label>quite spacious</label>
						  </li>
						  <li>
							<minScore>84.5</minScore>
							<label>very spacious</label>
						  </li>
						  <li>
							<minScore>174.5</minScore>
							<label>extremely spacious</label>
						  </li>
						</scoreStages>
					</value>
				</li>
			</operations>
    </Operation>
</Patch>