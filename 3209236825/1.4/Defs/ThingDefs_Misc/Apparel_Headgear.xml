<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- === Knowledge of Bucket === -->

  <!-- Bucket Helmet or Buckhead -->
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Ai_Buckhead</defName>
    <label>buckhead</label>
    <description>A bucket helmet which gives moderate protection against sharp attacks. Not effective against blunt weapons.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/BuckheadPreview</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>4100</WorkToMake>
      <MaxHitPoints>140</MaxHitPoints>
      <Mass>3</Mass>
      <StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.14</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.4</EquipDelay>
    </statBases>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Buckhead</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Bucket</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>Ai_Bucknowledge</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <displayPriority>140</displayPriority>
    </recipeMaker>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>70</costStuffCount>
    <techLevel>Industrial</techLevel>
    <tradeTags>
      <li>Clothing</li>
      <li>Armor</li>
    </tradeTags>
  </ThingDef>

</Defs>