    <iconPath>World/FB_Pirate</iconPath>
    <iconColor>(0.8, 0.8, 0.8)</iconColor>
    <!-- These three tags groups are filled in via InjectStyleDefsToCultures -->
    <allowedPlaceTags>
      <li>OriginSpacer</li>
      <li>OriginTribal</li>
    </allowedPlaceTags>
    <thingStyleCategories>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <category>Spikecore</category>
        <priority>2</priority>
      </li>
    </thingStyleCategories>
    <styleItemTags>
