<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef ParentName="HumanFactionBase" Name="HD_Base_Common" Abstract="True">
		<pawnSingular>Homo Demen</pawnSingular>
		<pawnsPlural>Homo Demens</pawnsPlural>
		<listOrderPriority>20</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<canStageAttacks>true</canStageAttacks>
		<canSiege>true</canSiege>
		<earliestRaidDays>90</earliestRaidDays>
		<factionIconPath>World/HD_icon</factionIconPath>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<geneticVariance>0.1</geneticVariance>
		<fixedName>Void Out</fixedName>
		<!--<factionNameMaker>HDNamerFaction</factionNameMaker>-->
		<settlementNameMaker>HDNamerFaction</settlementNameMaker>
		<!--<pawnNameMaker>HDNamer</pawnNameMaker>-->
		<hairTags>
		  <li>Rural</li>
		</hairTags>
		<techLevel>Industrial</techLevel>
		<backstoryFilters>
		  <li>
			<categories>
			  <li>Outlander</li>
			</categories>
			<commonality>0.95</commonality>
		  </li>
		  <li>
			<categories>
			  <li>Offworld</li>
			</categories>
			<commonality>0.05</commonality>
		  </li>
		</backstoryFilters>
		<leaderTitle>Commander</leaderTitle>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 1)</li>
				<!--Constant 1 at all points levels-->
			</points>
		</raidCommonalityFromPointsCurve>
		<allowedArrivalTemperatureRange>
			<min>-40</min>
			<max>45</max>
		</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(800, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, ranged with melee mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
				  <HD_Scout>5</HD_Scout>
				  <HD_Guard>10</HD_Guard>
				  <HD_HvyGuard>2</HD_HvyGuard>
				  <HD_Operator>3</HD_Operator>
				</options>
			</li>
			<li>
				<!-- Peaceful -->
				<kindDef>Peaceful</kindDef>
				<options>
				  <HD_Scout>5</HD_Scout>
				  <HD_Guard>3</HD_Guard>
				  <HD_Operator>1</HD_Operator>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<HD_Trader>1</HD_Trader>
				</traders>
				<carriers>
					<Muffalo>3</Muffalo>
				</carriers>
				<guards>
				  <HD_Scout>4</HD_Scout>
				  <HD_Guard>9</HD_Guard>
				  <HD_Operator>2</HD_Operator>
				</guards>
			</li>
			
			<li>
				<!-- Settlement. -->
				<kindDef>Settlement</kindDef>
				<options>
				  <HD_Scout>10</HD_Scout>
				  <HD_Guard>15</HD_Guard>
				  <HD_HvyGuard>5</HD_HvyGuard>
				  <HD_Operator>3</HD_Operator>
				</options>
			</li>
		</pawnGroupMakers>
		<apparelStuffFilter>
			<thingDefs>
				<li>Cloth</li>
				<li>Steel</li>
			</thingDefs>
		</apparelStuffFilter>
	</FactionDef>

	<FactionDef ParentName="HD_Base_Common">
		<defName>HDBase</defName>
		<label>HD Base</label>
		<description>A base of Homo Demens. They seem to be heavily guarded and on alert.</description>
		<colorSpectrum>
		  <li>(247, 128, 8)</li>
		  <li>(247, 182, 29)</li>
		</colorSpectrum>
		<startingGoodwill>
		  <min>-50</min>
		  <max>-100</max>
		</startingGoodwill>
		<naturalColonyGoodwill>
		  <min>-100</min>
		  <max>-80</max>
		</naturalColonyGoodwill>
	</FactionDef>
</Defs>