<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <CultureDef Name="IT_MedievalCultureBase">
    <defName>IT_MedievalCulture</defName>
    <label>medieval</label>
    <description>The culture of descendants of the empire.</description>
    <pawnNameMaker>NamerPersonCorunan</pawnNameMaker>
    <ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoCorunan</ideoNameMaker>
    <deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerDeityCorunan</deityNameMaker>
    <deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">DeityTypeMakerCorunan</deityTypeMaker>
    <festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalCorunan</festivalNameMaker>
    <leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">LeaderTitleMaker_Corunan</leaderTitleMaker>
    <allowedPlaceTags>
      <li>OriginSpacer</li>
    </allowedPlaceTags>
    <iconPath>SimpleMedievalFactionOutpost</iconPath>
    <styleItemTags>
      <li>
        <tag>Tribal</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>Rural</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoBeard</tag>
        <baseWeight>10</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>BeardTribal</tag>
        <baseWeight>0.3</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>BeardRural</tag>
        <baseWeight>0.25</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>TattooFaceTribal</tag>
        <baseWeight>0.05</baseWeight>
        <weightFactor>0.05</weightFactor>
      </li>
      <li>
        <tag>TattooBodyTribal</tag>
        <baseWeight>0.05</baseWeight>
        <weightFactor>0.05</weightFactor>
      </li>
      <li>
        <tag>NoTattoo</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
    </styleItemTags>
  </CultureDef>

  <CultureDef ParentName="IT_MedievalCultureBase" Name="IT_MedievalRoughCultureBase">
    <defName>IT_MedievalRoughCulture</defName>
    <label>rough medieval</label>
    <description>The rough culture of the descendants of the Empire</description>
    <thingStyleCategories>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <category>Spikecore</category>
        <priority>2</priority>
      </li>
    </thingStyleCategories>
  </CultureDef>

</Defs>
