  <!--- Low tier Soldier Drone Melee -->

  <PawnKindDef>
    <defName>Hiver_Soldier</defName>
    <label>soldier drone</label>
    <race>Kenshi_Hiver_Soldier</race>
    <defaultFactionType>TribeCivil</defaultFactionType>
    <backstoryCategories>
      <li>HiveBackstorySoldier</li>
    </backstoryCategories>
    <maxGenerationAge>60</maxGenerationAge>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>
    <invNutrition>2.55</invNutrition>
    <invFoodDef>Pemmican</invFoodDef>
    <apparelTags>
      <li>Neolithic</li>
    </apparelTags>
    <combatPower>35</combatPower>
    <itemQuality>Poor</itemQuality>
    <gearHealthRange>
      <min>0.2</min>
      <max>1.1</max>
    </gearHealthRange>
    <apparelMoney>
      <min>0</min>
      <max>150</max>
    </apparelMoney>
    <weaponMoney>
      <min>50</min>
      <max>150</max>
    </weaponMoney>
    <weaponTags>
      <li>NeolithicMeleeBasic</li>
    </weaponTags>
    <techHediffsMoney>
      <min>50</min>
      <max>50</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
      <li>Simple</li>
    </techHediffsTags>
    <techHediffsChance>0.50</techHediffsChance>
    <initialWillRange>0~1</initialWillRange>
    <initialResistanceRange>10~30</initialResistanceRange>
  </PawnKindDef>

