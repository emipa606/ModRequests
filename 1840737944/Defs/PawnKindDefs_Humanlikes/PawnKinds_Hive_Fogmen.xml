<Defs>

  <!--- Low tier Soldier Drone Melee -->

  <PawnKindDef>
    <defName>Hiver_Soldier_Fog</defName>
    <label>fog heavy</label>
    <race>Kenshi_Fogman_Soldier</race>
    <defaultFactionType>TribeCivil</defaultFactionType>
