<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>BuffSoup</defName>
		<label>Souper Soup!</label>
		<description>Had a warm soup</description>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<initialSeverity>1</initialSeverity>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-1</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>Ate soup</label>
				<capMods>
					<li>
						<capacity>Metabolism</capacity>
						<offset>0.10</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.10</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>0.10</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<isBad>false</isBad>
	</HediffDef>
	<ThoughtDef>
		<defName>BuffSoupThought</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>BuffSoup</hediff>
		<stages>
			<li>
				<label>I had a warm soup.</label>
				<description>I need a nap.</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
