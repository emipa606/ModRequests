<?xml version="1.0" encoding="utf-8"?>

<Defs>


	<RecipeDef>
		<defName>MakeCaramelBalls</defName>
		<label>Make caramel balls</label>
		<description>Make sweet caramel balls from cornsyrup and milk.</description>
		<jobString>Making caramel balls.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<workAmount>500</workAmount>
		<soundWorking>Recipe_CookMeal</soundWorking>          
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>ElectricStove</li>
			<li>FueledStove</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Milk</li>
						<li>SCSmokeleafmilk</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SCCornsyrup</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SCCornsyrup</li>
				<li>Milk</li>
				<li>SCSmokeleafmilk</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<CaramelBalls>5</CaramelBalls>
		</products>
		<workSkill>Cooking</workSkill>
		<skillRequirements>
				<Cooking>6</Cooking>
		</skillRequirements>
	</RecipeDef>


	<RecipeDef>
		<defName>MakeHotCocoa</defName>
		<label>Make hot cocoa</label>
		<description>Make hot cocoa from chocolate and milk.</description>
		<jobString>Making hot cocoa.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<workAmount>500</workAmount>
		<soundWorking>Recipe_CookMeal</soundWorking>          
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>Brewery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Milk</li>
						<li>SCSmokeleafmilk</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chocolate</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Milk</li>
				<li>SCSmokeleafmilk</li>
				<li>Chocolate</li>
			</thingDefs>
			<specialFiltersToDisallow>
				<li>AllowRotten</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<products>
			<HotCocoa>5</HotCocoa>
		</products>
		<workSkill>Cooking</workSkill>
	</RecipeDef>


	<RecipeDef>
		<defName>MakeHotTea</defName>
		<label>Make hot tea</label>
		<description>Make hot tea from smokeleaf and berries.</description>
		<jobString>Making hot tea.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<workAmount>500</workAmount>
		<soundWorking>Recipe_CookMeal</soundWorking>          
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>Brewery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SmokeleafLeaves</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RawBerries</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SmokeleafLeaves</li>
				<li>RawBerries</li>
			</thingDefs>
			<specialFiltersToDisallow>
				<li>AllowRotten</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<products>
			<HotTea>5</HotTea>
		</products>
		<workSkill>Cooking</workSkill>
	</RecipeDef>



</Defs>