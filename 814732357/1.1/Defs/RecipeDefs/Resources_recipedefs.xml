<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<RecipeDef>
		<defName>MakeSCSmokeleafmilk</defName>
		<label>make smokeleafmilk</label>
		<description>Make smokeleafmilk from smokeleafplants.</description>
		<jobString>Making smokeleafmilk.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1000</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<recipeUsers>
			<li>Brewery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SmokeleafLeaves</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SmokeleafLeaves</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<SCSmokeleafmilk>5</SCSmokeleafmilk>
		</products>
		<workSkill>Cooking</workSkill>
	</RecipeDef>


