<?xml version="1.0" encoding="utf-8" ?>
<!-- 
    Viking Barracks
-->
<Defs>

    <!-- 
        Abandoned Barracks 
    -->
    <MapGenerator.MapGeneratorBlueprintDef Name="AngleWyrm_Viking_Barracks">
        <defName>AngleWyrm_Viking_Barracks</defName>
        <chance>20</chance>
        <size>14,9</size>
        <canHaveHoles>true</canHaveHoles>
        <createTrigger>true</createTrigger>

        <!-- Walls, Doors and Furniture -->
        <buildingData>
            wwwwwwwwwwwwww
            w....w.......w
            w.z..wb.b.b.bw
            w....d.......w
            ws...wx......w
            w.s..wwwwwwwww
            wts..w...m....
            ws...d........
            wwwwww........
        </buildingData>
        <buildingLegend>
            <li>
                <key>w</key>
                <value>Wall</value>
            </li>
            <li>
                <key>d</key>
                <value>Door</value>
            </li>
            <li>
                <key>b</key>                <!-- Viking fur bed frame -->
                <value>VFEV_FurBed</value>
            </li>
            <li>
                <key>z</key>                <!-- Viking Brazure hearth -->
                <value>VFEV_Hearth</value>
            </li>
            <li>
                <key>t</key>                <!-- 2x1 table -->
                <value>Table1x2c</value>
            </li>
            <li>
                <key>s</key>
                <value>Stool</value>
            </li>
            <li>
                <key>x</key>                <!-- Viking mead fermenting barrel -->
                <value>VFEV_MeadFermentingBarrel</value>
            </li>
            <li>
                <key>m</key>                <!-- Viking training dummy -->
                <value>VFEV_TrainingDummy</value>
            </li>
        </buildingLegend>
        <rotationLegend>
            <li>
                <key>z</key>                <!-- Viking hearth -->
                <value>1</value>            <!-- 0-North, 1-East, 2-South, 3-West -->
            </li>
            <li>
                <key>b</key>                <!-- pillow end of bed at 'b' -->
                <value>0</value>            <!-- foot end of bed faces 0-North, 1-East, 2-South, 3-West -->
            </li>
            <li>
                <key>t</key>                <!-- 2x1 dining table -->
                <value>0</value>            <!-- 0-North, 1-East, 2-South, 3-West -->
            </li>
        </rotationLegend>

        <!-- Flooring -->
        <floorData>
            wwwwwwwwwwwwww
            wttttwpppppppw
            wttttwpppppppw
            wttttppppppppw
            wttttwpppppppw
            wttttwwwwwwwww
            wttttw........
            wttttd........
            wwwwww........
        </floorData>
        <floorLegend>
            <li>
                <key>p</key>
                <value>WoodPlankFloor</value>
            </li>
            <li>
                <key>t</key>
                <value>TileGranite</value>
            </li>
        </floorLegend>

		<!-- Loot -->
		<itemData>
            wwwwwwwwwwwwww
            w....wbfbfbfbw
            w.z..w.f.....w
            w....d.......w
            ws...wx......w
            w.s..wwwwwwwww
            wts..w...m....
            ws...d........
            wwwwww........
		</itemData>
		<itemLegend>
		<!-- Soft Warm Beds bedding disabled until issue #1 is resolved
		     https://github.com/AngleWyrm10/MoreBlueprints/issues/1

			<li>
				<key>f</key> 				 
				<value>SingleTribalBedding</value>
			</li>
		-->        
		</itemLegend>
		<itemSpawnChance>50</itemSpawnChance>

    </MapGenerator.MapGeneratorBlueprintDef>
</Defs>