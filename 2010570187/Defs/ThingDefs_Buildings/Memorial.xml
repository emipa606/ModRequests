<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<prerequisites>
            <li>makeshrines</li>
        </prerequisites>
  <ThingDef ParentName="BuildingBase">
    <defName>Memorial</defName>
    <label>memorial</label>
    <thingClass>Building_Sarcophagus</thingClass>
    <graphicData>
      <texPath>Things/Building/Misc/MemorialEmpty</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(5,6)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <description>An ornamented elegant burial memorial for the truly honored heroes.</description>
    <size>(5,6)</size>
    <pathCost>70</pathCost>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <tickerType>Rare</tickerType>
    <canOverlapZones>false</canOverlapZones>
    <building>
			<ai_chillDestination>false</ai_chillDestination>
			<preventDeteriorationInside>true</preventDeteriorationInside>
      <fullGraveGraphicData>
				<texPath>Things/Building/Misc/MemorialFull</texPath>
				<graphicClass>Graphic_Single</graphicClass>
				<drawSize>(5,6)</drawSize>
			</fullGraveGraphicData>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>CorpsesHumanlike</li>
          </categories>
          <specialFiltersToDisallow>
            <li>AllowCorpsesStranger</li>
          </specialFiltersToDisallow>
        </filter>
      </defaultStorageSettings>
    </building>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>400</MaxHitPoints>
      <Flammability>0.1</Flammability>
      <Beauty>300</Beauty>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <inspectorTabs>
      <li>ITab_Storage</li>
      <li>ITab_Art</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
        <mustBeFullGrave>true</mustBeFullGrave>
      </li>
    </comps>
    <costStuffCount>50</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <blockWind>true</blockWind>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <staticSunShadowHeight>0.6</staticSunShadowHeight>
    <designationCategory>Misc</designationCategory>
  </ThingDef>

 
  
</Defs>