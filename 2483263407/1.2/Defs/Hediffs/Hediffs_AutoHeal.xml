<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>O21_CelestialHediff</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>celestial</label>
		<description>This pawn is born from the fires of celestis, they may appear mortal but they are far from that.</description>
		<defaultLabelColor>(0.6,0.85,0.91)</defaultLabelColor>
		<isBad>false</isBad>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<capMods />
			</li>
		</stages>
		<comps>
			<li Class="O21Toolbox.AutoHeal.CompProperties_AutoHeal">
				<healTicks>1200</healTicks>
				<regrowParts>true</regrowParts>
                <cureTicks>300</cureTicks>
                <removeInfections>true</removeInfections>
                <infectionsAllowed />
                <explicitRemovals>
                    <li>FibrousMechanites</li>
                    <li>SensoryMechanites</li>
                </explicitRemovals>
                <growthTicks>600</growthTicks>
				<growthText>Growth: </growthText>
				<protoBodyPart>AutoHeal_ProtoBodypart</protoBodyPart>
				<curedBodyPart>AutoHeal_CuredBodypart</curedBodyPart>
			</li>
		</comps>
	</HediffDef>

</Defs>