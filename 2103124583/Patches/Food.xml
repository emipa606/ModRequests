<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="MealSurvivalPack"]/graphicData/texPath</xpath>
		<value>
			<texPath>Food/Survival</texPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="MealSurvivalPack"]/graphicData</xpath>
		<value>
			<drawSize>0.8</drawSize>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="MealSurvivalPack"]/description</xpath>
		<value>
			<description>A meal soaked in food preservatives and ready for a long journey.</description>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="MealSimple"]/graphicData/texPath</xpath>
		<value>
			<texPath>Food/Simple</texPath>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="MealFine"]/graphicData/texPath</xpath>
		<value>
			<texPath>Food/Fine</texPath>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="MealLavish"]/graphicData/texPath</xpath>
		<value>
			<texPath>Food/Lavish</texPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="MealNutrientPaste"]/graphicData/texPath</xpath>
		<value>
			<texPath>Food/NutrientPaste</texPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Pemmican"]/graphicData/texPath</xpath>
		<value>
			<texPath>Food/Pemmican</texPath>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Pemmican"]/description</xpath>
		<value>
			<description>A preserved mixture of meat, fat, and plant food. Tastes bland, but not offensive. It lasts a very long time without refrigeration. Great for traveling.</description>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Beer"]/graphicData/texPath</xpath>
		<value>
			<texPath>Drugs/Beer</texPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Kibble"]/graphicData/texPath</xpath>
		<value>
			<texPath>Food/Kibble</texPath>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="Kibble"]/graphicData</xpath>
		<value>
	      <graphicClass>Graphic_StackCount</graphicClass>
		</value>
	</Operation>

</Patch>