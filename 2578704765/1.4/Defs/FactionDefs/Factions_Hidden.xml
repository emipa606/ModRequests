<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef>
    <defName>HollywoodCannibals</defName>
    <label>hollywood cannibal</label>
    <description>Celebrities from the distant lands of Hollywood.</description>
    <pawnSingular>cannibal</pawnSingular>
    <pawnsPlural>cannibals</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>hollywood cannibals</fixedName>
    <techLevel>Spacer</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
      </li>
    </backstoryFilters>
    <humanlikeFaction>true</humanlikeFaction>
    <hidden>true</hidden>
    <autoFlee>False</autoFlee>
    <rescueesCanJoin>true</rescueesCanJoin>
    <allowedCultures><li>HollywoodCannibals</li></allowedCultures>
    <apparelStuffFilter>
      <thingDefs>
        <li>Synthread</li>
        <li>Hyperweave</li>
      </thingDefs>
    </apparelStuffFilter>
    <permanentEnemy>true</permanentEnemy>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <allowedArrivalTemperatureRange>
      <min>-100</min>
      <max>200</max>
    </allowedArrivalTemperatureRange>
	<raidLootMaker>ShiaRaidLootMaker</raidLootMaker>
    <raidLootValueFromPointsCurve>
      <points>
        <li>(35,     8)</li>
        <li>(100,   20)</li>
        <li>(1000, 60)</li>
        <li>(2000, 80)</li>
        <li>(4000, 100)</li>
      </points>
    </raidLootValueFromPointsCurve>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibal</li>
    </requiredMemes>
  </FactionDef>
  
  <ThingSetMakerDef>
    <defName>ShiaRaidLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Flake</li>
            <li>Yayo</li>
            <li>GoJuice</li>
            <li>WakeUp</li>
            <li>SmokeleafJoint</li>
            <li>Luciferium</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>
</Defs>