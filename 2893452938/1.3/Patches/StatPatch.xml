<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationSequence">
	<operations>
		<!-- Increase base max accuracy to 200% (diminshing returns in code) -->
		<li Class="PatchOperationAdd">
			<xpath>/Defs/StatDef[defName = "AccuracyTouch"]</xpath>
			<value>
				<maxValue>2</maxValue>
			</value>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>/Defs/StatDef[defName = "AccuracyShort"]</xpath>
			<value>
				<maxValue>2</maxValue>
			</value>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>/Defs/StatDef[defName = "AccuracyMedium"]</xpath>
			<value>
				<maxValue>2</maxValue>
			</value>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>/Defs/StatDef[defName = "AccuracyLong"]</xpath>
			<value>
				<maxValue>2</maxValue>
			</value>
		</li>
	</operations>
</Operation>
</Patch>