<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Integration with VGP -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Beast Man Tribes</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace/race/leatherDef[text()="Leather_Elephant"]</xpath>
					<value>
						<leatherDef>Hide_Thick</leatherDef>
					</value>
				</li>	

				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace/race/leatherDef[text()="Leather_Fox"]</xpath>
					<value>
						<leatherDef>Hide_SoftPelt</leatherDef>
					</value>
				</li>					

				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace/race/leatherDef[text()="Leather_Panthera"]</xpath>
					<value>
						<leatherDef>Hide_Plain</leatherDef>
					</value>
				</li>	

				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace/race/leatherDef[text()="Leather_Wolf"]</xpath>
					<value>
						<leatherDef>Hide_Plain</leatherDef>
					</value>
				</li>	

				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace/race/leatherDef[text()="Leather_Pig"]</xpath>
					<value>
						<leatherDef>Hide_Plain</leatherDef>
					</value>
				</li>	

            </operations>          
        </match>
    </Operation>
</Patch>