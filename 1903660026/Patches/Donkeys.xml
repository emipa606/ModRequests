<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Integration with VGP -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Donkeys</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

				<!-- apply the new hides -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef/race/leatherDef[text()="Leather_Donkey"]</xpath>
					<value>
						<leatherDef>Hide_Plain</leatherDef>
					</value>
				</li>	

            </operations>          
        </match>
    </Operation>
</Patch>