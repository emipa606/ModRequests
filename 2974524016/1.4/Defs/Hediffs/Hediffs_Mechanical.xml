<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <HediffDef>
        <defName>MHC_MechanicalShutdown</defName>
        <label>decommissioned</label>
        <description>Operability eliminated.</description>
        <initialSeverity>0</initialSeverity>
        <lethalSeverity>0</lethalSeverity>
        <defaultLabelColor>(0.4, 0.4, 0.4)</defaultLabelColor>
        <scenarioCanAdd>false</scenarioCanAdd>
    </HediffDef>

    <HediffDef>
        <defName>MHC_Restarting</defName>
        <label>Restarting</label>
        <description>Unit is fully restarting all functionality and reactivating.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <initialSeverity>1</initialSeverity>
        <maxSeverity>1</maxSeverity>
        <defaultLabelColor>(0.3, 0.7, 0.3)</defaultLabelColor>
        <scenarioCanAdd>false</scenarioCanAdd>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-1</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
            </li>
        </comps>
        <stages>
            <li>
                <hungerRateFactor>0.4</hungerRateFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>MHC_CoolantShortage</defName>
        <label>Coolant shortage</label>
        <description>This unit has insufficient coolant to fully fill its coolant lines and is shutting down to avoid catastrophic failure.\nCoolant reserves must be refilled to ensure a return to proper functionality.</description>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.8</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <label>moderate</label>
                <minSeverity>0.25</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.6</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <label>severe</label>
                <minSeverity>0.5</minSeverity>
                <hungerRateFactor>0.8</hungerRateFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.4</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.75</minSeverity>
                <lifeThreatening>true</lifeThreatening>
                <hungerRateFactor>0.25</hungerRateFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>MHC_LubricantShortage</defName>
        <label>Lubricant shortage</label>
        <description>This unit has insufficient lubrication to maintain smooth part functionality, reducing exterior part efficiency and increasing the loss of maintenance.\nLubricant reserves must be refilled to ensure a return to proper functionality.</description>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <MHC_MaintenanceRetention>0.90</MHC_MaintenanceRetention>
                </statFactors>
            </li>
            <li>
                <label>moderate</label>
                <minSeverity>0.25</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <MHC_MaintenanceRetention>0.80</MHC_MaintenanceRetention>
                </statFactors>
            </li>
            <li>
                <label>severe</label>
                <minSeverity>0.5</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.85</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.85</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <MHC_MaintenanceRetention>0.70</MHC_MaintenanceRetention>
                </statFactors>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.75</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <MHC_MaintenanceRetention>0.60</MHC_MaintenanceRetention>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

</Defs>
