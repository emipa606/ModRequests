<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef>
        <defName>MHC_Make_IndustrialCoolantPack</defName>
        <label>make coolant packs</label>
        <description>Efficiently make coolant packs, simple containers that will replenish the reserves of a mechanical pawn that consumes it.</description>
        <jobString>Making coolant.</jobString>
        <workAmount>4000</workAmount>
		<skillRequirements>
            <Crafting>6</Crafting>
        </skillRequirements>
        <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Drug</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>100</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Neutroamine</li>
                <li>Chemfuel</li>
			</thingDefs>
		</fixedIngredientFilter>
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>
        <workSkill>Crafting</workSkill>
        <products>
            <MHC_CoolantPack>10</MHC_CoolantPack>
        </products>
        <displayPriority>1300</displayPriority>
    </RecipeDef>

