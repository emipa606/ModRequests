<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ============= Add Harvesting WorkType and Move Harvest WorkGiverDef to Harvesting ============= -->
  <WorkTypeDef>
    <defName>Harvesting</defName>
    <labelShort>Harvest</labelShort>
    <pawnLabel>Harvester</pawnLabel>
    <gerundLabel>harvesting</gerundLabel>
    <description>Harvest crops, and forage for wild plants.</description>
    <verb>Harvest</verb>
    <naturalPriority>750</naturalPriority>
    <requireCapableColonist>true</requireCapableColonist>
    <relevantSkills>
      <li>Plants</li>
    </relevantSkills>
    <workTags>
      <li>ManualSkilled</li>
      <li>PlantWork</li>
      <li>Commoner</li>
      <li>AllWork</li>
    </workTags>
  </WorkTypeDef>
  <WorkGiverDef>
    <defName>GrowerHarvest</defName>
    <label>harvest crops</label>
    <giverClass>WorkGiver_GrowerHarvest</giverClass>
    <workType>Harvesting</workType>
    <priorityInType>100</priorityInType>
    <verb>harvest</verb>
    <gerund>harvesting</gerund>
    <scanThings>false</scanThings>
    <scanCells>true</scanCells>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </WorkGiverDef>

	<!-- ============= Rename Growing WorkType to Sowing ============= -->
  <WorkTypeDef>
    <defName>Growing</defName>
    <labelShort>Sow</labelShort>
    <pawnLabel>Sower</pawnLabel>
    <gerundLabel>sowing</gerundLabel>
    <description>Plant seeds in fields.</description>
    <verb>Sow</verb>
    <naturalPriority>700</naturalPriority>
    <requireCapableColonist>true</requireCapableColonist>
    <relevantSkills>
      <li>Plants</li>
    </relevantSkills>
    <workTags>
      <li>ManualSkilled</li>
      <li>PlantWork</li>
      <li>Commoner</li>
      <li>AllWork</li>
    </workTags>
  </WorkTypeDef>

	<!-- ============= Move Plant Cutting to be next to Growing ============= -->
  <WorkTypeDef>
    <defName>PlantCutting</defName>
    <labelShort>Plant cut</labelShort>
    <pawnLabel>Plant cutter</pawnLabel>
    <gerundLabel>plant cutting</gerundLabel>
    <description>Cut or harvest plants as designated.</description>
    <verb>Cut</verb>
    <naturalPriority>650</naturalPriority>
    <requireCapableColonist>true</requireCapableColonist>
    <relevantSkills>
      <li>Plants</li>
    </relevantSkills>
    <workTags>
      <li>ManualSkilled</li>
      <li>PlantWork</li>
      <li>Commoner</li>
      <li>AllWork</li>
    </workTags>
  </WorkTypeDef>

</Defs>