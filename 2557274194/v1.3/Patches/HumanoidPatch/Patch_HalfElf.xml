<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ancient Species</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/AlienRace.ThingDef_AlienRace[defName = "AS_WAE_Race" or defName = "AS_WHE_Race"]/alienRace/raceRestriction/whiteApparelList</xpath>
					<value>
						<li>Apparel_SlaveCollar_Explosive</li>
						<li>Apparel_SlaveCollar_Electric</li>
						<li>Apparel_SlaveCollar_Crypto</li>
						<li>Apparel_Collar</li>
						<li>Apparel_BodyStrap</li>
					</value>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="AS_WAE_Race"]/comps</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="AS_WAE_Race"]</xpath>
						<value>
							<comps>
								<li>
									<compClass>SimpleSlaveryCollars.CompSlave</compClass>
								</li>
							</comps>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="AS_WAE_Race"]/comps</xpath>
						<value>
							<li>
								<compClass>SimpleSlaveryCollars.CompSlave</compClass>
							</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="AS_WHE_Race"]/comps</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="AS_WHE_Race"]</xpath>
						<value>
							<comps>
								<li>
									<compClass>SimpleSlaveryCollars.CompSlave</compClass>
								</li>
							</comps>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="AS_WHE_Race"]/comps</xpath>
						<value>
							<li>
								<compClass>SimpleSlaveryCollars.CompSlave</compClass>
							</li>
						</value>
					</match>
				</li>
            </operations>
        </match>
    </Operation>
</Patch>
