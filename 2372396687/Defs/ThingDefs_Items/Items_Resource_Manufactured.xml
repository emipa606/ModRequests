<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ResourceBase">
		<defName>TP_Feces</defName>
		<label>Manure</label>
		<description>Animal waste.</description>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Items/TP_Feces</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.85</drawSize>
		</graphicData>
		<stackLimit>150</stackLimit>
		<healthAffectsPrice>false</healthAffectsPrice>
		<statBases>
			<MaxHitPoints>25</MaxHitPoints>
			<MarketValue>0.05</MarketValue>
			<Mass>0.1</Mass>
			<Flammability>0.1</Flammability>
			<DeteriorationRate>8.0</DeteriorationRate>
			<Beauty>-20</Beauty>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<comps>
			<li Class="TestCore.Feces.CompProperties_TempTransforms">
				<progressPerDegreePerTick>0.00003</progressPerDegreePerTick>
				<thingToTransformInto>TP_Dried_Feces</thingToTransformInto>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="ResourceBase">
		<defName>TP_Dried_Feces</defName>
		<label>Dried Manure</label>
		<description>Dried animal waste.</description>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Items/TP_Dried_Feces</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.85</drawSize>
		</graphicData>
		<stackLimit>150</stackLimit>
		<healthAffectsPrice>false</healthAffectsPrice>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>0.06</MarketValue>
			<Mass>0.05</Mass>
			<Flammability>1.5</Flammability>
			<DeteriorationRate>8.0</DeteriorationRate>
			<Beauty>-10</Beauty>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<comps>
		</comps>
	</ThingDef>

</Defs>
