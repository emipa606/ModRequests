<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<HediffDef>
		<defName>InspiredLeaderNearby</defName>
		<label>inspired leader bonus</label>
		<description>Someone nearby with an Inspired Leadership inspiration is directing me to work more efficiently</description>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1</severityPerDay>
			</li>
		</comps>	
		<stages>
			<li>
				<label>Inspired</label>
				<becomeVisible>false</becomeVisible>
				<statOffsets>
					<WorkSpeedGlobal>0.5</WorkSpeedGlobal>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>	
</Defs>