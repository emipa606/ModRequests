<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[D] Interests</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DMinorAversion"]/inspirationFactor</xpath>
					<value>
						<inspirationFactor>0.5</inspirationFactor>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DMajorAversion"]/inspirationFactor</xpath>
					<value>
						<inspirationFactor>0.1</inspirationFactor>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DCompulsion"]/inspirationFactor</xpath>
					<value>
						<inspirationFactor>4</inspirationFactor>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DInspiring"]/inspirationFactor</xpath>
					<value>
						<inspirationFactor>6</inspirationFactor>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DStagnant"]/inspirationFactor</xpath>
					<value>
						<inspirationFactor>0.1</inspirationFactor>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DVocalHatred"]/inspirationFactor</xpath>
					<value>
						<inspirationFactor>0.1</inspirationFactor>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DNaturalGenius"]/inspirationFactor</xpath>
					<value>
						<inspirationFactor>8</inspirationFactor>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DBored"]/inspirationFactor</xpath>
					<value>
						<inspirationFactor>0.2</inspirationFactor>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DInspiring"]/inspirationChanceMultiplier</xpath>
					<value>
						<inspirationChanceMultiplier>2</inspirationChanceMultiplier>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>/Defs/DInterests.InterestDef[defName="DNaturalGenius"]/inspirationChanceMultiplier</xpath>
					<value>
						<inspirationChanceMultiplier>1.5</inspirationChanceMultiplier>
					</value>
				</li>	
			</operations>
		</match>	
	</Operation>		
</Patch>