<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/InspirationTweaks.InspirationWithCompsDef[defName="Focus_PsychicSoothe"]/statFactors</xpath>
					<value>
						<PsychicEntropyMax>1.2</PsychicEntropyMax>
						<PsychicEntropyRecoveryRate>1.2</PsychicEntropyRecoveryRate>
						<MeditationFocusGain>1.2</MeditationFocusGain>
					</value>
				</li>	
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/InspirationTweaks.InspirationWithCompsDef[defName="Focus_PsychicStrength"]/statFactors</xpath>
					<value>
						<PsychicEntropyMax>1.5</PsychicEntropyMax>
						<PsychicEntropyRecoveryRate>2</PsychicEntropyRecoveryRate>
						<MeditationFocusGain>2</MeditationFocusGain>
					</value>
				</li>	
			</operations>
		</match>	
	</Operation>		
</Patch>