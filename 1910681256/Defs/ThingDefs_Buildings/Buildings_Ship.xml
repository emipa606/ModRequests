<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="BuildingBase">
    <defName>Ship_LifeSupport</defName>
    <label>Life Support System</label>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/Ship/Life_Support</texPath>
      <graphicClass>Graphic_SingleOnOff</graphicClass>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <researchPrerequisites>
      <li>ShipLifeSupport</li>
    </researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <WorkToBuild>30000</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>Recycles oxygen, water, and sewage. Required to keep non-cryptosleeping colonists and animals alive.</description>
    <size>(3,3)</size>
    <designationCategory>Ship</designationCategory>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>800</basePowerConsumption>
        <transmitsPower>false</transmitsPower>
      </li>
      <li Class="CompProperties_ShipPart"/>
      <li Class="CompProperties_Flickable"/>
			<li Class="DubsBadHygiene.CompProperties_Pipe">
				<mode>Sewage</mode>
			</li>
			<li Class="DubsBadHygiene.CompProperties_WaterStorage">
				<WaterStorageCap>1000</WaterStorageCap>
			</li>
			<li Class="DubsBadHygiene.CompProperties_SepticTank">
				<TreatedPerDay>1000</TreatedPerDay>
				<capacity>1000</capacity>
				<priority>2</priority>
			</li>
			<li Class="DubsBadHygiene.CompProperties_WaterFiltration"/>
			<li Class="CompProperties_WaterRecycler">
				<RecycleTicks>5</RecycleTicks>
			</li>
	  <li Class="CompProperties_GraphicOnOff"/>
    </comps>
    <building>
      <shipPart>true</shipPart>
    </building>
    <costList>
      <Steel>120</Steel>
	  <Plasteel>60</Plasteel>
      <ComponentSpacer>12</ComponentSpacer>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <designationHotKey>Misc5</designationHotKey>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>Ship_Beam</defName>
    <label>ship hull</label>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/Linked/ShipBeam/ShipBeam_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
	<uiIconPath>Things/Building/Ship/ShipBeamModular_north</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <WorkToBuild>1600</WorkToBuild>
      <MaxHitPoints>1000</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>The outer structural elements of a ship's hull. Includes conduits for power, life-support gases, and plumbing.</description>
    <designationCategory>Ship</designationCategory>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_ShipPart"/>
	  <li Class="CompProperties_RoofMe"/>
      <li Class="DubsBadHygiene.CompProperties_Pipe">
        <mode>Sewage</mode>
      </li>
    </comps>
    <placeWorkers>
	
    </placeWorkers>
    <building>
      <shipPart>true</shipPart>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
	  <claimable>false</claimable>
    </building>
    <costList>
      <Steel>16</Steel>
      <Plasteel>4</Plasteel>
	  <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <researchPrerequisites>
      <li>ShipBasics</li>
    </researchPrerequisites>
    <designationHotKey>Misc1</designationHotKey>
    <holdsRoof>true</holdsRoof>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>ShipAirlock</defName>
    <label>ship airlock</label>
    <description>Allows access to a ship or divides rooms inside it. Low-energy plasma barriers prevent gases from escaping.</description>
    <category>Building</category>
	<thingClass>Building_Door</thingClass>
    <designationCategory>Ship</designationCategory>
    <altitudeLayer>DoorMoveable</altitudeLayer>
    <fillPercent>1</fillPercent>
    <useHitPoints>true</useHitPoints>
    <graphicData>
      <texPath>Things/Building/Ship/Airlock_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
      <!--  no damage marks because they don't move with the door
        <rect>(0,0.12,1,0.76)</rect>-->
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Door/Autodoor_MenuIcon</uiIconPath>
    <costList>
      <Steel>40</Steel>
      <ComponentSpacer>2</ComponentSpacer>
	  <Plasteel>25</Plasteel>
    </costList>
    <comps>
	  <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>50</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_ShipPart"/>
      <li Class="CompProperties_Forbiddable"/>
	  <li Class="CompProperties_RoofMe"/>
      <li Class="DubsBadHygiene.CompProperties_Pipe">
        <mode>Sewage</mode>
      </li>
    </comps>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>ShipBasics</li>
    </researchPrerequisites>
	<statBases>
      <WorkToBuild>1200</WorkToBuild>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0.0</Flammability>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <rotatable>false</rotatable>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <drawerType>RealtimeOnly</drawerType>
    <building>
			<shipPart>true</shipPart>
			<isInert>true</isInert>
			<canPlaceOverWall>true</canPlaceOverWall>
      <soundDoorOpenPowered>Door_OpenPowered</soundDoorOpenPowered>
      <soundDoorClosePowered>Door_ClosePowered</soundDoorClosePowered>
      <soundDoorOpenManual>Door_OpenManual</soundDoorOpenManual>
      <soundDoorCloseManual>Door_CloseManual</soundDoorCloseManual>
		<blueprintGraphicData>
			<texPath>Things/Building/Door/Door_Blueprint</texPath>
		</blueprintGraphicData>
		<blueprintClass>Blueprint_Door</blueprintClass>
	  <claimable>false</claimable>
    </building>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>ShipInside_SolarGenerator</defName>
    <label>solar generator</label>
    <description>Produces electricity from sunlight. Does not work in the dark or under artificial light.</description>
    <thingClass>Building</thingClass>
		<graphicData>
      <texPath>Things/Building/Linked/ShipBeam/ShipBeam_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
		<uiIconPath>Things/Building/Ship/BeamSolarUI</uiIconPath>
    <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <castEdgeShadows>true</castEdgeShadows>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToBuild>8000</WorkToBuild>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
    <costList>
      <Steel>150</Steel>
	  <Plasteel>25</Plasteel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <building>
      <shipPart>true</shipPart>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
	  <claimable>false</claimable>
    </building>
    <comps>
    <li Class="CompProperties_RoofMe"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlantSolarShip</compClass>
        <basePowerConsumption>-1</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>
			<li Class="CompProperties_Unfold">
				<extendRate>0.005</extendRate>
				<retractRate>0.0025</retractRate>
        <retractTime>750</retractTime>
				<extendDirection>(0,0,-1)</extendDirection>
				<startOffset>0.5</startOffset>
				<length>3.0</length>
	      <graphicPath>Things/Building/Ship/SolarExpand</graphicPath>
			</li>
      <li Class="DubsBadHygiene.CompProperties_Pipe">
        <mode>Sewage</mode>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_SolarShip</li>
    </placeWorkers>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Ship</designationCategory>
    <designationHotKey>Misc5</designationHotKey>
    <researchPrerequisites>
      <li>Electricity</li>
      <li>SolarPanels</li>
      <li>ShipBasics</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>ShipInside_PassiveCooler</defName>
    <label>ship radiator</label>
    <description>Radiates heat into the void, cooling a ship's interior.</description>
    <thingClass>Building_Radiator</thingClass>
    <category>Building</category>
		<graphicData>
      <texPath>Things/Building/Linked/ShipBeam/ShipBeam_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Ship/BeamRadiatorUI</uiIconPath>
    <size>(1,1)</size>
    <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <castEdgeShadows>true</castEdgeShadows>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToBuild>8000</WorkToBuild>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
    <costList>
      <Steel>100</Steel>
	  <Plasteel>25</Plasteel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0.5</resourcesFractionWhenDeconstructed>
    <placeWorkers>
      <li>PlaceWorker_Radiator</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>100</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_TempControl">
				<energyPerSecond>-21</energyPerSecond>
			</li>
			<li Class="CompProperties_Unfold">
				<extendRate>0.005</extendRate>
				<retractRate>0.0025</retractRate>
        <retractTime>750</retractTime>
				<extendDirection>(0,0,-1)</extendDirection>
				<startOffset>0.5</startOffset>
				<length>3.0</length>
	      <graphicPath>Things/Building/Ship/Radiator</graphicPath>
			</li>
			<li Class="CompProperties_Overlay">
				<graphicPath>Things/Building/Ship/RadiatorVent</graphicPath>
				<size>(1,1,1)</size>
			</li>
      <li Class="CompProperties_RoofMe"/>
      <li Class="DubsBadHygiene.CompProperties_Pipe">
        <mode>Sewage</mode>
      </li>
    </comps>
    <designationCategory>Ship</designationCategory>
    <designationHotKey>Misc2</designationHotKey>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>ShipBasics</li>
      <li>AirConditioning</li>
    </researchPrerequisites>
		<building>
			<shipPart>true</shipPart>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
	  <claimable>false</claimable>
		</building>
  </ThingDef>
  
</Defs>