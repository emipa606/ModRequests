<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>DTechprintingRecipe</defName>
		<label>Reduce to techshards</label>
		<description>Convert an unresearched item into techshards, which are small pieces of techprints. Techshards help unlock technologies required to build the items they're techprinted from.</description>
		<workerCounterClass>DTechprinting.RecipeWorkCounter_MakeTechshards</workerCounterClass>
		<jobString>Converting something into techshards</jobString>
		<workSkill>Intellectual</workSkill>
		<workSpeedStat>ResearchSpeed</workSpeedStat>
		<workAmount>2500</workAmount>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<ingredients/>
		<requiredGiverWorkType>DTechprinting</requiredGiverWorkType>
		<recipeUsers>
			<li>DTechprinter</li>
		</recipeUsers>
		<unfinishedThingDef>DUnfinishedTechshards</unfinishedThingDef>
		<products>
			<DTechshard>1</DTechshard>
		</products>
	</RecipeDef>
	
	<RecipeDef>
		<defName>DTechprintingStackRecipe</defName>
		<label>Reduce 10 small items to techshards</label>
		<description>Convert some small unresearched items into techshards, which are small pieces of techprints. Techshards help unlock technologies required to build the items they're techprinted from.</description>
		<workerCounterClass>DTechprinting.RecipeWorkCounter_MakeTechshards</workerCounterClass>
		<jobString>Converting a stack of something into techshards</jobString>
		<workSkill>Intellectual</workSkill>
		<workSpeedStat>ResearchSpeed</workSpeedStat>
		<workAmount>2500</workAmount>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<ingredients/>
		<requiredGiverWorkType>DTechprinting</requiredGiverWorkType>
		<recipeUsers>
			<li>DTechprinter</li>
		</recipeUsers>
		<unfinishedThingDef>DUnfinishedTechshards</unfinishedThingDef>
		<products>
			<DTechshard>1</DTechshard>
		</products>
	</RecipeDef>
</Defs>
