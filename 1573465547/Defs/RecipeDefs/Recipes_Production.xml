<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>WDMakeConcreteBlocks</defName>
    <label>make concrete blocks</label>
    <description>Make reinforced concrete blocks of stone and steel.</description>
    <jobString>Making concrete of stone blocks and steel</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>	
	
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>	  
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneBlocks</li>			
      </categories>	  
      <thingDefs>
        <li>Steel</li>
      </thingDefs>	 	  
      <disallowedThingDefs>
        <li>WDBlocksConcrete</li>
      </disallowedThingDefs>		  
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>StoneBlocks</li>		
      </categories>		  
      <thingDefs>
        <li>Steel</li>
      </thingDefs> 
    </defaultIngredientFilter>	
    <products>
      <WDBlocksConcrete>50</WDBlocksConcrete>
    </products>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>WDReinforcedConcrete</researchPrerequisite>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>	
  </RecipeDef>

</Defs>
