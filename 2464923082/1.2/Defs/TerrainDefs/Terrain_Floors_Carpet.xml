<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================= Textured Carpets ================= -->

  <TerrainDef Name="ATK_TexturedCarpetBase" ParentName="FloorBase" Abstract="True">
    <texturePath>Terrain/Surfaces/TexturedCarpet</texturePath>
    <researchPrerequisites><li>CarpetMaking</li></researchPrerequisites>
    <burnedDef>ATK_BurnedTexturedCarpet</burnedDef>
    <costList>
      <Cloth>7</Cloth>
    </costList>
    <designatorDropdown>Floor_Carpet_Textured</designatorDropdown>
    <statBases>
      <Beauty>2</Beauty>
      <Flammability>0.32</Flammability>
      <WorkToBuild>800</WorkToBuild>
    </statBases>
  </TerrainDef>
  
  <TerrainDef ParentName="ATK_TexturedCarpetBase">
    <defName>ATK_TexturedCarpetRed</defName>
    <label>red textured carpet</label>
    <renderPrecedence>200</renderPrecedence>
    <description>Plush carpet with a textured weave in a lovely rose hue.</description>
    <color>(118,49,57)</color>
  </TerrainDef>

  <TerrainDef ParentName="ATK_TexturedCarpetBase">
    <defName>ATK_TexturedCarpetGreen</defName>
    <label>green textured carpet</label>
    <renderPrecedence>199</renderPrecedence>
    <description>Plush carpet with a textured weave in a naturalistic green for an earthy feeling.</description>
    <color>(89,105,62)</color>
  </TerrainDef>

  <TerrainDef ParentName="ATK_TexturedCarpetBase">
    <defName>ATK_TexturedCarpetBlue</defName>
    <label>blue textured carpet</label>
    <renderPrecedence>198</renderPrecedence>
    <description>Plush carpet with a textured weave in a cool blue.</description>
    <color>(24,65,121)</color>
