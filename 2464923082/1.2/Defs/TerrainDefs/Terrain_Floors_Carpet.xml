  <TerrainDef ParentName="ATK_TexturedCarpetBase">
    <defName>ATK_TexturedCarpetCream</defName>
    <label>cream textured carpet</label>
    <renderPrecedence>197</renderPrecedence>
    <description>Plush carpet with a textured weave in an inviting cream colour.</description>
    <color>(195,192,176)</color>
  </TerrainDef>

  <TerrainDef ParentName="ATK_TexturedCarpetBase">
    <defName>ATK_TexturedCarpetDark</defName>
    <label>dark textured carpet</label>
    <renderPrecedence>196</renderPrecedence>
