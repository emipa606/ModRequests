<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!--========================= Vanilla Furniture Expanded - Medical Module =============================-->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="sd_medicaddons.PatchOperationFindMod">
                <modName>Vanilla Furniture Expanded - Medical Module</modName>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "Bed_OperatingTable"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "Bed_CryptoBed"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "Facility_VitalsCentre"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "Facility_IVDrip"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "Facility_ResearchCounter"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationRemove">
                <xpath>/Defs/ThingDef[defName = "CounterTopModular"]/designationCategory</xpath>
            </li>
        </operations>
    </Operation>

</Patch>