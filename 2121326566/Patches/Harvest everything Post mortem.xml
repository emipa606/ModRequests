<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!--========================= Harvest Organs Post Mortem =============================-->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="sd_medicaddons.PatchOperationFindMod">
                <modName>Harvest Organs Post Mortem</modName>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "TableAutopsy"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
        </operations>
    </Operation>

</Patch>