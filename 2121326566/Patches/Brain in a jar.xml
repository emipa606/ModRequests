<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <!--========================= Brain In a Jar =============================-->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="sd_medicaddons.PatchOperationFindMod">
                <modName>Brain In a Jar</modName>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "BrainInAJar"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "MiniBrainJar"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "DualBrain"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "QuadBrain"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "MasterBrain"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
        </operations>
    </Operation>

    <!--========================= add Dropdown menu =============================-->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="sd_medicaddons.PatchOperationFindMod">
                <modName>Brain In a Jar</modName>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "BrainInAJar"]</xpath>
                <value>
                    <designatorDropdown>HE_BrainJar</designatorDropdown>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "MiniBrainJar"]</xpath>
                <value>
                    <designatorDropdown>HE_BrainJar</designatorDropdown>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "DualBrain"]</xpath>
                <value>
                    <designatorDropdown>HE_BrainJar</designatorDropdown>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "QuadBrain"]</xpath>
                <value>
                    <designatorDropdown>HE_BrainJar</designatorDropdown>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "MasterBrain"]</xpath>
                <value>
                    <designatorDropdown>HE_BrainJar</designatorDropdown>
                </value>
            </li>
        </operations>
    </Operation>

</Patch>

