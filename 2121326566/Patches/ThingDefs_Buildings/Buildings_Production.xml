<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- HiTech Research Bench -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "HiTechResearchBench"]/size</xpath>
		<value>
			<size>(3,1)</size>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "HiTechResearchBench"]/graphicData/drawSize</xpath>
		<value>
			<drawSize>(3.0,1.25)</drawSize>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "HiTechResearchBench"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Building/Research/ResearchBenchHiTech</texPath>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "HiTechResearchBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
		<value>
			<li>LabTerminal</li>
			<li>LabStation</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "HiTechResearchBench"]/comps</xpath>
		<value>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(115,198,206,0)</glowColor>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "HiTechResearchBench"]/designationCategory</xpath>
		<value>
			<designationCategory>HE_Hospital</designationCategory>
		</value>
	</Operation>

	<!-- Research bench -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "SimpleResearchBench"]/designationCategory</xpath>
		<value>
			<designationCategory>HE_Hospital</designationCategory>
		</value>
	</Operation>

</Patch>