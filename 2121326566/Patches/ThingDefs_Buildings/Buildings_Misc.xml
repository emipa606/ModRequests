<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Comms console -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/size</xpath>
		<value>
			<size>(3,1)</size>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/graphicData/drawSize</xpath>
		<value>
			<drawSize>(3.0,1.25)</drawSize>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Building/Research/Comms</texPath>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/graphicData/shadowData/volume</xpath>
		<value>
			<volume>(3,0.5,1)</volume>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/graphicData/damageData/rect</xpath>
		<value>
			<rect>(0,0,3,0.8)</rect>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/interactionCellOffset</xpath>
		<value>
			<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/comps</xpath>
		<value>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(115,198,206,0)</glowColor>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/graphicData</xpath>
		<value>
			<shaderType>CutoutComplex</shaderType>
		</value>
	</Operation>


	<!-- MultiAnalyzer -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "MultiAnalyzer"]/graphicData/drawSize</xpath>
		<value>
			<drawSize>(2,2)</drawSize>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "MultiAnalyzer"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Building/Research/MultiAnalyzer</texPath>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "MultiAnalyzer"]/designationCategory</xpath>
		<value>
			<designationCategory>HE_Hospital</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "CommsConsole"]/comps</xpath>
		<value>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(115,198,206,0)</glowColor>
			</li>
		</value>
	</Operation>



	<!-- Ground Penetrating Scanner -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "GroundPenetratingScanner"]/graphicData/shadowData/volume</xpath>
		<value>
			<volume>(1.4, 0.5, 1.4)</volume>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "GroundPenetratingScanner"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Building/Research/GroundPenetratingScanner</texPath>
		</value>
	</Operation>

</Patch>

