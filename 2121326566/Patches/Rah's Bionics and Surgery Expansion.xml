<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <!--========================= Rah's Bionics and Surgery Expansion =============================-->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="sd_medicaddons.PatchOperationFindMod">
                <modName>Rah's Bionics and Surgery Expansion</modName>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "AdvancedMedicalStation"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName = "BionicWorkbench"]/designationCategory</xpath>
                <value>
                    <designationCategory>HE_Hospital</designationCategory>
                </value>
            </li>
        </operations>
    </Operation>

</Patch>