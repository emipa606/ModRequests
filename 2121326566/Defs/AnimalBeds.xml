<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!--===========Animal bed 1=============-->
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>HE_AnimalMedicBox</defName>
    <thingClass>Building_Bed</thingClass>
    <label>Medical Animal Bed</label>
    <description>A Herbal bed that gives a 3x medical boost over normal animal beds. Fits any size animal.</description>
    <rotatable>True</rotatable>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <passability>PassThroughOnly</passability>
    <canOverlapZones>false</canOverlapZones>
    <graphicData>
      <texPath>Things/Building/industrial/AnimalMedicBox</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1</drawSize>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <uiIconScale>0.50</uiIconScale>
    <stuffCategories>
      <li>Woody</li>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <costList>
      <Cloth>25</Cloth>
      <ComponentIndustrial>1</ComponentIndustrial>
      <MedicineHerbal>5</MedicineHerbal>
    </costList>
    <building>
      <bed_humanlike>false</bed_humanlike>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_healPerDay>30</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
    </building>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <WorkToBuild>750</WorkToBuild>
      <Mass>10</Mass>
      <BedRestEffectiveness>1.10</BedRestEffectiveness>
      <Comfort>0.35</Comfort>
      <ImmunityGainSpeedFactor>1.20</ImmunityGainSpeedFactor>
      <MedicalTendQualityOffset>0.15</MedicalTendQualityOffset>
      <SurgerySuccessChanceFactor>1.20</SurgerySuccessChanceFactor>
    </statBases>
    <researchPrerequisites>
      <li>sd_medicaddons_research_industrial_med</li>
    </researchPrerequisites>
    <designationCategory>HE_Hospital</designationCategory>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>VitalsMonitor</li>
          <li>Wall_VitalsMonitor</li>
          <li>sd_medicaddons_medieval_surg_washpan</li>
          <li>sd_medicaddons_medieval_surg_instruments</li>
          <li>sd_medicaddons_medieval_surg_lamp</li>
          <li>sd_medicaddons_industrial_surg_instruments</li>
          <li>sd_medicaddons_industrial_surg_lamp</li>
          <li>sd_medicaddons_spacer_surg_vitalsmonitor</li>
          <li>sd_medicaddons_spacer_surg_instruments</li>
          <li>sd_medicaddons_spacer_surg_lamp</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>true</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
    </comps>
  </ThingDef>

  <!--===========Animal bed 2 by Suno =============-->
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>SUN_MedicalAnimalBed</defName>
    <thingClass>Building_Bed</thingClass>
    <label>medical animal bed 2</label>
    <description>A soft animal bed for surgery and recovery. Fits any animal.</description>
    <rotatable>false</rotatable>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <passability>PassThroughOnly</passability>
    <canOverlapZones>false</canOverlapZones>
    <graphicData>
      <texPath>Things/Building/modern/AnimalMedBed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.1,1.1</drawSize>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <uiIconScale>0.50</uiIconScale>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <costList>
      <Steel>20</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <building>
      <bed_humanlike>false</bed_humanlike>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_healPerDay>10</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
    </building>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <Flammability>0.9</Flammability>
      <WorkToBuild>750</WorkToBuild>
      <Mass>10</Mass>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.35</Comfort>
      <ImmunityGainSpeedFactor>1.20</ImmunityGainSpeedFactor>
      <MedicalTendQualityOffset>0.15</MedicalTendQualityOffset>
      <SurgerySuccessChanceFactor>1.3</SurgerySuccessChanceFactor>
    </statBases>
    <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
    <designationCategory>HE_Hospital</designationCategory>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>VitalsMonitor</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>true</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
    </comps>
  </ThingDef>
</Defs>