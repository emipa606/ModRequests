  <AbilityDef  ParentName="DivinationAbility">
    <defName>DiviForewarningI</defName>
    <label>minor forewarning</label>
    <description>The Psyker's precognitive powers allow him to walk through a hail of fire, dodging incoming bullets by knowing their exact trajectories in advance.</description>
    <level>10</level>
    <iconPath>UI/Abilities/DiviForewarning</iconPath>
    <hotKey>Misc1</hotKey>
    <cooldownTicksRange>2500~3000</cooldownTicksRange>
    <statBases>
      <Ability_EntropyGain>20</Ability_EntropyGain>
      <Ability_Duration>20</Ability_Duration>
    </statBases>
    <verbProperties>
      <range>1.0</range>
      <warmupTime>0.5</warmupTime>
      <targetParams>
        <canTargetSelf>True</canTargetSelf>
        <canTargetAnimals>False</canTargetAnimals>
        <canTargetPawns>True</canTargetPawns>
        <canTargetLocations>False</canTargetLocations>
        <canTargetMechs>False</canTargetMechs>
        <canTargetItems>False</canTargetItems>
        <canTargetBuildings>False</canTargetBuildings>
      </targetParams>
    </verbProperties>
    <targetRequired>False</targetRequired>
    <comps>
      <li Class = "Corruption.Core.Abilities.CompProperties_AbilityGiveHediffSeverity">
        <compClass>CompAbilityEffect_GiveHediff</compClass>
        <hediffDef>DiviForewarning</hediffDef>
        <onlyToSelf>True</onlyToSelf>
        <psychic>True</psychic>
        <goodwillImpact>-15</goodwillImpact>
      </li>
    </comps>
  </AbilityDef>

