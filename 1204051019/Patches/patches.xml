<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<li>A Dog Said... Animal Prosthetics</li>
		</mods>
		<match Class="PatchOperationAdd"> <!-- "Inserting animal defNames into surgery recipes == peglegs and healing" -->
			<xpath>/Defs/RecipeDef[defName = "InstallPegLegAnimal" or "OldWoundsAnimalBase"]/recipeUsers</xpath>
			<value>
				<li>Fluffin</li>
				<li>Tukiri</li>
				<li>Hyperweaver</li>
				<li>Devilstalker</li>
				<li>Nightstalker</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<li>A Dog Said... Animal Prosthetics</li>
		</mods>
		<match Class="PatchOperationAdd"> <!-- "Inserting animal defNames into surgery recipes == simple prosthetics and organs" -->
			<xpath>/Defs/RecipeDef[defName = "InstallNoseAnimalSimple" or "InstallBionicAnimalStomach" or "InstallBionicAnimalKidney" or "InstallBionicAnimalLiver" or "InstallBionicAnimalLung" or "InstallBionicAnimalHeart" or "InstallSpineAnimalSimple" or "InstallJawAnimalSimple" or "InstallBionicEyeAnimal" or "InstallEarAnimalSimple" or "InstallSimpleProstheticLegAnimal"]/recipeUsers</xpath>
			<value>
				<li>Fluffin</li>
				<li>Tukiri</li>
				<li>Hyperweaver</li>
				<li>Devilstalker</li>
				<li>Nightstalker</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<li>A Dog Said... Animal Prosthetics</li>
		</mods>
		<match Class="PatchOperationAdd"> <!-- "Inserting animal defNames into surgery recipes == bionics and powerclaw" -->
			<xpath>/Defs/RecipeDef[defName = "InstallAnimalBrainStimulator" or "InstallSpineAnimalBionic" or "InstallJawAnimalBionic" or "InstallEarAnimalBionic" or "InstallPowerClawAnimal" or "InstallBionicLegAnimal"]/recipeUsers</xpath>
			<value>
				<li>Hyperweaver</li>
				<li>Devilstalker</li>
				<li>Nightstalker</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<li>A Dog Said... Animal Prosthetics</li>
		</mods>
		<match Class="PatchOperationAdd"> <!-- "Inserting animal defNames into surgery recipes == For Tails (if the animal has that bodypart only!)" -->
			<xpath>/Defs/RecipeDef[defName = "InstallSimpleProstheticTailAnimal"]/recipeUsers</xpath>
			<value>
				<li>Tukiri</li>
				<li>Devilstalker</li>
				<li>Nightstalker</li>
			</value>
		</match>
	</Operation>


</Patch>