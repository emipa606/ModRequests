<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<ThingDef ParentName="BigBirdThingBaseGalaxy">
		<defName>Tukiri</defName>
		<label>tukiri</label>
		<description>A round, chubby, flightless bird-like creature that has adapted well to hot regions.</description>
		<statBases>
			<MoveSpeed>3.5</MoveSpeed>
			<ComfyTemperatureMin>-8</ComfyTemperatureMin>
			<ComfyTemperatureMax>70</ComfyTemperatureMax>
			<MarketValue>250</MarketValue>
			<LeatherAmount>20</LeatherAmount>
		</statBases>
		<race>
		<fleshType>Normal</fleshType>
			<wildBiomes>
				<Desert>0.3</Desert>
				<AridShrubland>0.3</AridShrubland>
				<TropicalRainforest>0.1</TropicalRainforest>
				<TropicalSwamp>0.03</TropicalSwamp>
			</wildBiomes>
			<herdAnimal>false</herdAnimal>
			<baseBodySize>0.7</baseBodySize>
			<baseHungerRate>0.2</baseHungerRate>
			<baseHealthScale>0.7</baseHealthScale>
			<foodType>OmnivoreRoughAnimal</foodType>
			<leatherDef>Leather_Tukiri</leatherDef>
			<wildness>0.45</wildness>
			<trainability>None</trainability>
			<lifeExpectancy>12</lifeExpectancy>
			<useMeatFrom>Cassowary</useMeatFrom>
			<manhunterOnDamageChance>0.01</manhunterOnDamageChance>
			<manhunterOnTameFailChance>0</manhunterOnTameFailChance>
		</race>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>EggTukiriFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>6</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>
					<min>1</min>
					<max>3</max>
				</eggCountRange>
			</li>
		</comps>
		<tools>
			<li>
				<label>claws</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.65</cooldownTime>
				<linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>16</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>10</power>
				<cooldownTime>1.85</cooldownTime>
				<linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>16</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>4</power>
				<cooldownTime>1.65</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<tradeTags>
			<li>AnimalCommon</li>
			<li>AnimalFarm</li>
		</tradeTags>
	</ThingDef>

