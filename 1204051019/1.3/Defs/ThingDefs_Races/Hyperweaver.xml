<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<ThingDef ParentName="BaseInsectGalaxy">
		<defName>Hyperweaver</defName>
		<label>hyperweaver</label>
		<description>A big spider-like creature that produces natural hyperweave.</description>
		<statBases>
			<MoveSpeed>4.7</MoveSpeed>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ComfyTemperatureMin>-40</ComfyTemperatureMin>
			<ComfyTemperatureMax>70</ComfyTemperatureMax>
			<MarketValue>800</MarketValue>
			<LeatherAmount>35</LeatherAmount>
		</statBases>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>12</power>
				<cooldownTime>2.0</cooldownTime>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.5</chanceFactor>
			</li>
		</tools>
		<race>
		<fleshType>Insectoid</fleshType>
			<wildBiomes>
				<TropicalRainforest>0.1</TropicalRainforest>
				<TropicalSwamp>0.1</TropicalSwamp>
				<TemperateSwamp>0.04</TemperateSwamp>
			</wildBiomes>
			<herdAnimal>false</herdAnimal>
			<body>BeetleLike</body>
			<baseBodySize>1.2</baseBodySize>
			<baseHungerRate>0.35</baseHungerRate>
			<baseHealthScale>2.5</baseHealthScale>
			<foodType>OmnivoreRoughAnimal</foodType>
			<leatherDef>Leather_Hyperweaver</leatherDef>
			<gestationPeriodDays>10</gestationPeriodDays>
			<useMeatFrom>Megaspider</useMeatFrom>
			<wildness>0.8</wildness>
			<trainability>Advanced</trainability>
			<lifeExpectancy>25</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.6</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>2.0</minAge>
					<soundWounded>Pawn_BigInsect_Pain</soundWounded>
					<soundDeath>Pawn_BigInsect_Death</soundDeath>
					<soundCall>Pawn_BigInsect_Call</soundCall>
					<soundAngry>Pawn_BigInsect_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>EggHyperweaverFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>10</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>
					<min>1</min>
					<max>3</max>
				</eggCountRange>
			</li>
			<li Class="CompProperties_Shearable">
				<woolDef>Hyperweave</woolDef>
				<shearIntervalDays>4</shearIntervalDays>
				<woolAmount>10</woolAmount>
			</li>
		</comps>
		<tradeTags>
			<li>AnimalInsect</li>
		</tradeTags>
	</ThingDef>

	<PawnKindDef ParentName="AnimalKindBaseGalaxy">
		<defName>Hyperweaver</defName>
		<label>hyperweaver</label>
		<race>Hyperweaver</race>
		<combatPower>150</combatPower>
		<canArriveManhunter>true</canArriveManhunter>
		<ecoSystemWeight>0.25</ecoSystemWeight>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Animals/Hyperweaver</texPath>
					<drawSize>0.5</drawSize>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Animals/dead/Dead_Hyperweaver</texPath>
					<drawSize>0.5</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Animals/Hyperweaver</texPath>
					<drawSize>1.5</drawSize>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Animals/dead/Dead_Hyperweaver</texPath>
					<drawSize>1.5</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Animals/Hyperweaver</texPath>
					<drawSize>2.5</drawSize>
					<shadowData>
						<volume>(0.5, 0.7, 0.43)</volume>
						<offset>(0,0,-0.1)</offset>
					</shadowData>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Animals/dead/Dead_Hyperweaver</texPath>
					<drawSize>2.5</drawSize>
				</dessicatedBodyGraphicData>
			</li>
		</lifeStages>
	</PawnKindDef>



</Defs>