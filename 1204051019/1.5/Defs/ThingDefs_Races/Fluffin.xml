<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<ThingDef ParentName="AnimalThingBaseGalaxy">
		<defName>Fluffin</defName>
		<label>fluffin</label>
		<description>The Fluffin is a medium sized pig-like animal that produces wool and milk. It is peaceful and roams the cold regions in family packs.</description>
		<statBases>
			<MoveSpeed>3.6</MoveSpeed>
			<ComfyTemperatureMin>-70</ComfyTemperatureMin>
			<ComfyTemperatureMax>30</ComfyTemperatureMax>
			<MarketValue>400</MarketValue>
			<LeatherAmount>25</LeatherAmount>
		</statBases>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>6</power>
				<cooldownTime>1.65</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>3</power>
				<cooldownTime>1.65</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_Shearable">
				<woolDef>FluffinWool</woolDef>
				<shearIntervalDays>7</shearIntervalDays>
				<woolAmount>30</woolAmount>
			</li>
			<li Class="CompProperties_Milkable">
				<milkDef>Milk</milkDef>
				<milkIntervalDays>1</milkIntervalDays>
				<milkAmount>2</milkAmount>
			</li>
		</comps>
		<race>
			<fleshType>Normal</fleshType>
			<wildBiomes>
				<IceSheet>0.1</IceSheet>
				<BorealForest>0.3</BorealForest>
				<Tundra>0.3</Tundra>
				<ColdBog>0.4</ColdBog>
				<TemperateForest>0.05</TemperateForest>
			</wildBiomes>
			<body>QuadrupedAnimalWithHooves</body>
			<herdAnimal>true</herdAnimal>
			<baseHungerRate>0.2</baseHungerRate>
			<baseBodySize>0.8</baseBodySize>
			<baseHealthScale>1.0</baseHealthScale>
			<useMeatFrom>Pig</useMeatFrom>
			<foodType>OmnivoreRoughAnimal</foodType>
			<leatherDef>Leather_Fluffin</leatherDef>
			<wildness>0.1</wildness>
			<trainability>Advanced</trainability>
			<gestationPeriodDays>13</gestationPeriodDays>
			<manhunterOnDamageChance>0.01</manhunterOnDamageChance>
			<manhunterOnTameFailChance>0</manhunterOnTameFailChance>
			<litterSizeCurve>
				<points>
					<li>(0.5, 0)</li>
					<li>(1, 1)</li>
					<li>(3, 1)</li>
					<li>(3.5, 0)</li>
				</points>
			</litterSizeCurve>
			<lifeExpectancy>12</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.1</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.5</minAge>
					<soundWounded>Pawn_Wildboar_Wounded</soundWounded>
					<soundDeath>Pawn_Wildboar_Death</soundDeath>
					<soundCall>Pawn_Wildboar_Call</soundCall>
					<soundAngry>Pawn_Wildboar_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
		<tradeTags>
			<li>AnimalCommon</li>
			<li>AnimalFarm</li>
		</tradeTags>
	</ThingDef>

