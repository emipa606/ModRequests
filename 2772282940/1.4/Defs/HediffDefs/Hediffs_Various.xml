<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>Gagged</defName>
    <label>gagged</label>
    <description>A gag is inhibiting this person's speech.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Eating</capacity>
            <setMax>0.5</setMax>
          </li>		  
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_RemoveIfApparelDropped" />
    </comps>
    <isBad>false</isBad>
  </HediffDef>
</Defs>