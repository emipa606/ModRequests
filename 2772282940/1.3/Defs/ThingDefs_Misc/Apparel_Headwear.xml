<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_SimpleGag</defName>
    <label>gag</label>
    <description>A long strip of either cloth or leather that is wrapped over and in the mouth to inhibit speech.</description>
    <graphicData>
      <texPath>Apparel/Single/SimpleGag_Item</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <costStuffCount>20</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
	  <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>900</WorkToMake>
      <Mass>0.07</Mass>
      <StuffEffectMultiplierArmor>0.0</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
	<equippedStatOffsets>			
		<SlaveSuppressionOffset>0.1</SlaveSuppressionOffset>
	</equippedStatOffsets>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
		<li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <apparel>
      <forceRenderUnderHair>true</forceRenderUnderHair>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Teeth</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Gag/SimpleGag</wornGraphicPath>
	  <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
    <comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>Gagged</hediff>
        <part>Jaw</part>
      </li>
    </comps>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
  
  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_BridleGag</defName>
    <label>bridle</label>
    <description>An uncomfortable piece of headgear that fits over the head to inhibit speech.</description>
    <graphicData>
      <texPath>Apparel/Single/BridleGag_Item</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>1600</WorkToMake>
      <Mass>0.14</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<equippedStatOffsets>			
		<SlaveSuppressionOffset>0.1</SlaveSuppressionOffset>
	</equippedStatOffsets>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>	
    <apparel>
      <forceRenderUnderHair>false</forceRenderUnderHair>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Teeth</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Bridle/BridleGag</wornGraphicPath>
	  <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
    </apparel>
    <comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>Gagged</hediff>
        <part>Jaw</part>
      </li>
    </comps>	
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
</Defs>