			<value>
              <li Class="RimWorldRealFoW.ThingComps.Properties.CompProperties_AffectVision">
                <fovMultiplier>2.2</fovMultiplier>
              </li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<li>(YY)Real Fog of War</li>
		</mods>
	<match Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="WatchTower"]</xpath>
	</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<li>(YY)Real Fog of War</li>
		</mods>
	<match Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="WatchTelescope"]</xpath>
	</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<li>(YY)Real Fog of War</li>
		</mods>
	<match Class="PatchOperationRemove">
