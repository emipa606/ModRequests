<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>ArgoFaction</defName>
    <label>Argonian Tribe</label>
    <description>An Argonian Settlement.</description>
    <pawnsPlural>Argonians</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Hist speaker</leaderTitle>
    <fixedName>Argonian Confederation</fixedName>
	<settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
    <techLevel>Neolithic</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>ArgonianBackstory</li>
        </categories>
      </li>
    </backstoryFilters>
    <allowedCultures>
      <li>Corunan</li>
    </allowedCultures>
    <colorSpectrum>
      <li>(0, 150, 0)</li>
      <li>(0, 150, 0)</li>
    </colorSpectrum>
    <visitorTraderKinds>
      <li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_Slaver</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <ArgoColonist>50</ArgoColonist>
          <ArgoGuard>90</ArgoGuard>
          <ArgoHistSpeaker>250</ArgoHistSpeaker>
          <ArgoFighter>100</ArgoFighter>
          <ArgoHunter>130</ArgoHunter>
          <ArgoHistGuard>130</ArgoHistGuard>
          <ArgoShadowscale>170</ArgoShadowscale>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <ArgoTrader>1</ArgoTrader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <ArgoGuard>90</ArgoGuard>
          <ArgoFighter>100</ArgoFighter>
          <ArgoHunter>130</ArgoHunter>
          <ArgoHistGuard>130</ArgoHistGuard>
        </guards>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <ArgoColonist>50</ArgoColonist>
          <ArgoGuard>90</ArgoGuard>
          <ArgoHistSpeaker>250</ArgoHistSpeaker>
          <ArgoFighter>100</ArgoFighter>
          <ArgoShadowscale>170</ArgoShadowscale>
        </options>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <ArgoColonist>50</ArgoColonist>
          <ArgoGuard>90</ArgoGuard>
          <ArgoHistSpeaker>250</ArgoHistSpeaker>
          <ArgoFighter>100</ArgoFighter>
          <ArgoHunter>130</ArgoHunter>
          <ArgoHistGuard>130</ArgoHistGuard>
          <ArgoShadowscale>170</ArgoShadowscale>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/ArgoBaseAlt</settlementTexturePath>
    <factionIconPath>World/ArgoBaseAlt</factionIconPath>
  </FactionDef>
</Defs>