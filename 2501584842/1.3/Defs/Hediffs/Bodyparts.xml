<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>BionicArgoTail</defName>
    <label>bionic argonian tail</label>
    <spawnThingOnRemoved>BionicArgoTail</spawnThingOnRemoved>
    <description>a biomechanical argonian tail used for balance.</description>
    <addedPartProps>
      <betterThanNatural>true</betterThanNatural>
      <solid>true</solid>
      <partEfficiency>1.2</partEfficiency>
    </addedPartProps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>ClothTail</defName>
    <description>a crappy cloth tail. Better than nothing, I guess.</description>
    <label>cloth tail</label>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>0.6</partEfficiency>
    </addedPartProps>
  </HediffDef>
</Defs>