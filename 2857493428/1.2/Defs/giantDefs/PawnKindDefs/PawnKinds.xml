    <minGenerationAge>18</minGenerationAge>
    <defaultFactionType>GI_PlayerFaction</defaultFactionType>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
    <apparelMoney>
      <min>295</min>
      <max>295</max>
    </apparelMoney>
	<apparelTags>
      <li>GiantTribal</li>
    </apparelTags>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>GiantStory</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
	<techHediffsTags>
      <li>Simple</li>
      <li>Advanced</li>
    </techHediffsTags>
  </PawnKindDef>

