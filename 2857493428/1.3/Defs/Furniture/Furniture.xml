<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="BedWithQualityBase">
    <defName>GIBed</defName>
    <label>Pile of Straw</label>
    <description>A large creature is a good pile of straw to sleep on.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/GIBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.8,3.5)</drawSize>
      <shaderType>CutoutComplex</shaderType>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
        </linkableFacilities>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>400</WorkToBuild>
      <Mass>60</Mass>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.6</Comfort>
      <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
    </statBases>
    <size>(1,1)</size>
    <costList>
		    <WoodLog>80</WoodLog>
	</costList>
    <building>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
    </building>
    <fillPercent>0.2</fillPercent>
    <pathCost>42</pathCost>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <techLevel>Neolithic</techLevel>
	<uiIconScale>0.5</uiIconScale>
  </ThingDef>
  
