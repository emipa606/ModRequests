<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[XND] Nocturnal Animals</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ============================ Crepuscular ========================== -->

				<!-- Dragonhawks -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWDragonhawk"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Crepuscular</bodyClock>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWFairyDragon"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Crepuscular</bodyClock>
						</li>
					</value>
				</li>

				<!-- ============================ Diurnal ========================== -->

				<!-- Elekks -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWElekk"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Diurnal</bodyClock>
						</li>
					</value>
				</li>

				<!-- Direwolves -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWDirewolf"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Diurnal</bodyClock>
						</li>
					</value>
				</li>
            
				<!-- Hawkstriders -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="WoW_Animal_Hawkstrider"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Diurnal</bodyClock>
						</li>
					</value>
				</li>

				<!-- Azerothian Horses -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWHorse"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Diurnal</bodyClock>
						</li>
					</value>
				</li>

				<!-- Kodos -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWKodo"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Diurnal</bodyClock>
						</li>
					</value>
				</li>

				<!-- Murlocs -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWMurloc"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Diurnal</bodyClock>
						</li>
					</value>
				</li>

				<!-- Rams -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWRam"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Diurnal</bodyClock>
						</li>
					</value>
				</li>

				<!-- Raptors -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWRaptor"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Diurnal</bodyClock>
						</li>
					</value>
				</li>

				<!-- ============================ Nocturnal ========================== -->
				<!-- Nightsabers -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWNightsaber"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Nocturnal</bodyClock>
						</li>
					</value>
				</li>

				<!-- Forsaken Horse -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="BaseWoWForsakenhorse"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Nocturnal</bodyClock>
						</li>
					</value>
				</li>
				
				<!-- Voidstriders -->
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="WoW_Animal_Voidstrider"]</xpath>
					<value>
						<li Class="NocturnalAnimals.ExtendedRaceProperties">
							<bodyClock>Nocturnal</bodyClock>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>