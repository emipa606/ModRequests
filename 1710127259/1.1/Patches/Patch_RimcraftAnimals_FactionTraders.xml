<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[Ry]Rimcraft Factions</li>
        </mods>
        <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
		      <!-- Alliance -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/FactionDef[defName="Alliance"]/pawnGroupMakers/li/carriers/Muffalo</xpath>
                <value>
                    <WoW_Animal_Horse>4</WoW_Animal_Horse>
                </value>
            </li>
				
				<!-- BloodElf -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/FactionDef[defName="BloodElf"]/pawnGroupMakers/li/carriers/Muffalo</xpath>
                <value>
                    <WoW_Animal_Hawkstrider>4</WoW_Animal_Hawkstrider>
                </value>
            </li>
				
				<!-- Draenei -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/FactionDef[defName="Draenei"]/pawnGroupMakers/li/carriers/Muffalo</xpath>
                <value>
                    <WoW_Animal_Elekk>4</WoW_Animal_Elekk>
                </value>
            </li>
				
				<!-- Forsaken -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/FactionDef[defName="Forsaken"]/pawnGroupMakers/li/carriers/Muffalo</xpath>
                <value>
                    <WoW_Animal_Forsakenhorse>4</WoW_Animal_Forsakenhorse>
                </value>
            </li>
				
				<!-- HighElf -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/FactionDef[defName="HighElf"]/pawnGroupMakers/li/carriers/Muffalo</xpath>
                <value>
                    <WoW_Animal_Unicorn>4</WoW_Animal_Unicorn>
                </value>
            </li>
				
				<!-- Ironforge -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/FactionDef[defName="Ironforge"]/pawnGroupMakers/li/carriers/Muffalo</xpath>
                <value>
                    <WoW_Animal_Ram>4</WoW_Animal_Ram>
                </value>
            </li>
				
				<!-- Horde -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/FactionDef[defName="Horde"]/pawnGroupMakers/li/carriers/Muffalo</xpath>
                <value>
                    <WoW_Animal_Direwolf>4</WoW_Animal_Direwolf>
                </value>
            </li>
				
				<!-- NightElf -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/FactionDef[defName="NightElf"]/pawnGroupMakers/li/carriers/Muffalo</xpath>
                <value>
                    <WoW_Animal_Nightsaber>4</WoW_Animal_Nightsaber>
                </value>
            </li>

        </operations>
        </match>
    </Operation>
</Patch>