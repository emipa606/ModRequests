<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!--Unicorn Def-->
	<ThingDef ParentName="BaseWoWHorse">
		<defName>WoW_Animal_Unicorn</defName>
		<label>unicorn</label>
		<description>Unicorns are a species of horse-like creatures living on Azeroth and who, unlike horses, have a horn growing out of their head. The Quel'dorei steed are descended from a fine line of horses that once grazed near the shores of the Well of Eternity</description>
		<statBases>
			<MoveSpeed>7</MoveSpeed>
			<ComfyTemperatureMin>-25</ComfyTemperatureMin>
			<MarketValue>1250</MarketValue>
		</statBases>
		<race>
			<petness>.1</petness>
			<leatherDef>Leather_WoWUnicorn</leatherDef>
			<wildness>0.70</wildness>
			<meatLabel>unicorn meat</meatLabel>
			<gestationPeriodDays>60</gestationPeriodDays>
			<lifeExpectancy>300</lifeExpectancy>
			<wildBiomes>
				<TropicalRainforest>0.00</TropicalRainforest>
				<TemperateForest>0.025</TemperateForest>
				<BorealForest>0.025</BorealForest>
				<Desert>0.00</Desert>
				<AridShrubland>0.01</AridShrubland>
				<Tundra>0.01</Tundra>
				<ColdBog>0.01</ColdBog>
			</wildBiomes>
		</race>
		<tools>
			<li>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>8.8</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.7</chanceFactor>
			</li>
			<li>
				<label>horn</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>20</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
			<li>
				<label>left hoof</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>14</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
			</li>
			<li>
				<label>right hoof</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>14</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
			</li>
		</tools>
		<tradeTags>
			<li>WoW_Animal_HighElf</li>
			<li>AnimalExotic</li>
		</tradeTags>
