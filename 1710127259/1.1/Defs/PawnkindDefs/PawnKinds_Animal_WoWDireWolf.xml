<Defs>
   
   <PawnKindDef ParentName="AnimalKindBase">
      <defName>WoW_Animal_Direwolf</defName>
      <label>direwolf</label>
      <race>WoW_Animal_Direwolf</race>
      <combatPower>250</combatPower>
      <wildGroupSize>
         <min>1</min>
         <max>3</max>
      </wildGroupSize>
      <alternateGraphicChance>0.9</alternateGraphicChance>
      <alternateGraphics>
         <li>
            <texPath>Things/WoWAnimals/Direwolf/Direwolf/Bicolour</texPath>
         </li>
         <li>
            <texPath>Things/WoWAnimals/Direwolf/Direwolf/DarkBrown</texPath>
         </li>
         <li>
            <texPath>Things/WoWAnimals/Direwolf/Direwolf/DarkGrey</texPath>
         </li>
         <li>
            <texPath>Things/WoWAnimals/Direwolf/Direwolf/RedBrown</texPath>
         </li>
      </alternateGraphics>
      <lifeStages>
         <li>
            <label>direwolf pup</label>
            <labelPlural>direwolf pups</labelPlural>
            <bodyGraphicData>
               <texPath>Things/WoWAnimals/Direwolf/Direwolf/Black</texPath>
               <drawSize>1.5</drawSize>
               <shadowData>
                  <volume>(0.2, 0.1, 0.2)</volume>
                  <offset>(0,0,-0.2)</offset>
               </shadowData>
            </bodyGraphicData>
            <dessicatedBodyGraphicData>
               <texPath>Things/Pawn/Animal/Wolf_Timber/Dessicated_Wolf_Timber</texPath>
               <drawSize>1.5</drawSize>
            </dessicatedBodyGraphicData>
         </li>
         <li>
            <bodyGraphicData>
               <texPath>Things/WoWAnimals/Direwolf/Direwolf/Black</texPath>
               <drawSize>2</drawSize>
               <shadowData>
                  <volume>(0.3, 0.3, 0.3)</volume>
                  <offset>(0,0,-0.3)</offset>
               </shadowData>
            </bodyGraphicData>
            <dessicatedBodyGraphicData>
               <texPath>Things/Pawn/Animal/Wolf_Timber/Dessicated_Wolf_Timber</texPath>
               <drawSize>2.25</drawSize>
            </dessicatedBodyGraphicData>
         </li>
         <li>
            <bodyGraphicData>
               <texPath>Things/WoWAnimals/Direwolf/Direwolf/Black</texPath>
               <drawSize>3</drawSize>
               <shadowData>
                  <volume>(0.4, 0.4, 0.4)</volume>
                  <offset>(0,0,-0.2)</offset>
               </shadowData>
            </bodyGraphicData>
            <dessicatedBodyGraphicData>
               <texPath>Things/Pawn/Animal/Wolf_Timber/Dessicated_Wolf_Timber</texPath>
               <drawSize>3</drawSize>
            </dessicatedBodyGraphicData>
         </li>
      </lifeStages>
   </PawnKindDef>
	
