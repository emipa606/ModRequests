<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!--Gilnean Horse Def-->
	<PawnKindDef ParentName="AnimalKindBase">
		<defName>WoW_Animal_Horse</defName>
		<label>gilnean mountain horse</label>
		<race>WoW_Animal_Horse</race>
		<combatPower>75</combatPower>
		<labelFemale>gilnean horse mare</labelFemale>
		<ecoSystemWeight>0.35</ecoSystemWeight>
		<wildGroupSize>
			<min>2</min>
			<max>6</max>
		</wildGroupSize>
		<alternateGraphicChance>0.9</alternateGraphicChance>
		<alternateGraphics>
			<li>
				<texPath>Things/WoWAnimals/Horse/Black</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Chestnut</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Dapple</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Grey</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Pale</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Palomino</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Piebald</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Pinto</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Red</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Smoky</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Snowy</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/Tan</texPath>
			</li>
			<li>
				<texPath>Things/WoWAnimals/Horse/White</texPath>
			</li>
		</alternateGraphics>
		<lifeStages>
			<li>
				<label>gilnean horse foal</label>
				<labelPlural>gilnean horse foals</labelPlural>
				<bodyGraphicData>
					<texPath>Things/WoWAnimals/Horse/Brown</texPath>
					<drawSize>1.5</drawSize>
					<shadowData>
						<volume>(0.2, 0.1, 0.2)</volume>
						<offset>(0,0,-0.2)</offset>
					</shadowData>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
					<drawSize>1.5</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/WoWAnimals/Horse/Brown</texPath>
					<drawSize>2</drawSize>
					<shadowData>
						<volume>(0.3, 0.3, 0.3)</volume>
						<offset>(0,0,-0.3)</offset>
					</shadowData>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
					<drawSize>2.25</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/WoWAnimals/Horse/Brown</texPath>
					<drawSize>3</drawSize>
					<shadowData>
						<volume>(0.4, 0.4, 0.4)</volume>
						<offset>(0,0,-0.2)</offset>
					</shadowData>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
					<drawSize>3</drawSize>
				</dessicatedBodyGraphicData>
			</li>
		</lifeStages>
	</PawnKindDef>

