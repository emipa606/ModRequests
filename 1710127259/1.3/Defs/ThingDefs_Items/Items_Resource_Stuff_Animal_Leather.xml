<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="LeatherBase">
		<!-- Unicorn Leather -->
		<defName>Leather_WoWUnicorn</defName>
		<label>unicorn leather</label>
		<description>Tanned, dried, scraped unicorn skin. While a decent leather, it neither protects nor insulates particularly well. But at least it looks pretty!</description>
		<graphicData>
			<color>(231,231,231)</color>
		</graphicData>
		<statBases>
			<MarketValue>8.0</MarketValue>
			<StuffPower_Armor_Sharp>0.64</StuffPower_Armor_Sharp>
			<StuffPower_Insulation_Cold>12</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>12</StuffPower_Insulation_Heat>
		</statBases>
		<stuffProps>
			<color>(231,231,231)</color>
			<commonality>0.00001</commonality>
			   <statFactors>
				   <Beauty>5</Beauty>
				</statFactors>
			</stuffProps>
		</ThingDef>
		<ThingDef ParentName="LeatherBase">
			<!-- Forsakenhorse Leather -->
			<defName>Leather_WoWForsakenhorse</defName>
			<label>forsaken horse leather</label>
			<description>Tanned, dried, scraped forsaken horse skin. Most people find this material horrifying. Some find it fascinating. This leather being rotted neither protects nor insulates particularly well. Smells pretty bad too.</description>
			<graphicData>
				<color>(135,141,140)</color>
			</graphicData>
			<statBases>
				<MarketValue>0.5</MarketValue>
				<StuffPower_Armor_Sharp>0.10</StuffPower_Armor_Sharp>
				<StuffPower_Insulation_Cold>2</StuffPower_Insulation_Cold>
				<StuffPower_Insulation_Heat>2</StuffPower_Insulation_Heat>
			</statBases>
			<stuffProps>
				<color>(135,141,140)</color>
				<commonality>0.00025</commonality>
				<statFactors>
					<Beauty>-2</Beauty>
				</statFactors>
			</stuffProps>
		</ThingDef>
		<ThingDef ParentName="LeatherBase">
			<!-- Fairy Dragon Leather -->
			<defName>Leather_WoWFairyDragon</defName>
			<label>fairy dragon leather</label>
			<description>The tanned skin of the rare fairy dragon. Fairy dragon skin is reasonably tough, provides strong insulation against heat, and is quite beautiful.</description>
			<graphicData>
				<color>(60,194,193)</color>
			</graphicData>
			<statBases>
				<MarketValue>10.0</MarketValue>
				<StuffPower_Armor_Sharp>0.75</StuffPower_Armor_Sharp>
				<StuffPower_Armor_Blunt>0.30</StuffPower_Armor_Blunt>
				<StuffPower_Insulation_Cold>4</StuffPower_Insulation_Cold>
				<StuffPower_Insulation_Heat>30</StuffPower_Insulation_Heat>
			</statBases>
			<stuffProps>
				<color>(60,194,193)</color>
				<commonality>0.00001</commonality>
				<statFactors>
					<Beauty>8</Beauty>
				</statFactors>
			</stuffProps>
		</ThingDef>
	</Defs>