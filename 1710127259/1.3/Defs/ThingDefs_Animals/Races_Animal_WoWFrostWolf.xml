            </capacities>
            <power>13</power>
            <cooldownTime>1.5</cooldownTime>
            <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
            <surpriseAttack>
               <extraMeleeDamages>
                  <li>
                     <def>Stun</def>
                     <amount>14</amount>
                  </li>
