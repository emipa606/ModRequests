<?xml version="1.0" encoding="utf-8" ?>
<Defs>


<GeneDef>
    <defName>Nyaron</defName>
    <label>nyaron</label>
    <labelShortAdj>nyaronned</labelShortAdj>
    <description>Carriers of this gene neko appears.</description>
    <biostatCpx>2</biostatCpx>
    <biostatMet>4</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Nyaron</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <forcedHeadTypes>
      <li>Nyaron_pale</li>
      <li>Nyaron_green</li>
      <li>Nyaron_amber</li>
      <li>Nyaron_red</li>
      <li>Nyaron_violet</li>
    </forcedHeadTypes>
    <statOffsets>
      <ComfyTemperatureMin>5</ComfyTemperatureMin>
	  <ComfyTemperatureMax>15</ComfyTemperatureMax>
    </statOffsets>
	<statFactors>
		<WorkSpeedGlobal>0.8</WorkSpeedGlobal>
	</statFactors>
  </GeneDef>

  <GeneDef ParentName="GeneHairStyleBase">
    <defName>Hair_Nyaron</defName>
    <label>nyaron hair</label>
    <labelShortAdj>nyaronhair</labelShortAdj>
    <description>Carriers of this gene nyaron hair.</description>
    <iconPath>UI/Icons/Genes/Gene_HairStyleNyaron</iconPath>
    <displayOrderInCategory>50</displayOrderInCategory>
    <hairTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>Nyaron</li>
      </tags>
    </hairTagFilter>
  </GeneDef>

  <!-- Body type -->

  <GeneDef ParentName="GeneEarsBase">
    <defName>Ears_Nyaron_Normal</defName>
    <label>nyaron ears(normal)</label>
    <description>Carriers of this gene have cat-like ears.</description>
    <iconPath>UI/Icons/Genes/Gene_EarCat</iconPath>
    <graphicData>
      <graphicPath>Things/Pawn/Humanlike/HeadAttachments/NyaronEars/NyaronEars</graphicPath>
      <colorType>Hair</colorType>
	  <useSkinShader>false</useSkinShader>
    </graphicData>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>cat</symbol></li>
        <li><symbol>kitty</symbol></li>
        <li><symbol>kit</symbol></li>
        <li><symbol>tabby</symbol></li>
        <li><symbol>tom</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>cat</symbol></li>
        <li><symbol>kitten</symbol></li>
        <li><symbol>tabby</symbol></li>
        <li><symbol>tom</symbol></li>
        <li><symbol>ear</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>
  
    <GeneDef ParentName="GeneTailBase">
    <defName>Tail_Nyaron_Normal</defName>
    <label>nyaron tail(normal)</label>
    <description>Carriers of this gene grow a slender tail that can act as a dexterous fifth limb.</description>
    <iconPath>UI/Icons/Genes/Gene_TailSmooth</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <displayOrderInCategory>1000</displayOrderInCategory>
    <capMods>
      <li>
        <capacity>Manipulation</capacity>
        <offset>0.1</offset>
      </li>
    </capMods>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <graphicData>
      <graphicPath>Things/Pawn/Humanlike/BodyAttachments/NyaronTail/NyaronTail</graphicPath>
      <colorType>Hair</colorType>
	  <drawScale>1.5</drawScale>
      <drawOffsetNorth>(0, 0.2, -0.2)</drawOffsetNorth>
      <drawOffsetSouth>(0, -0.1, -0.2)</drawOffsetSouth>
      <drawOffsetEast>(-0.45, -0.1, -0.15)</drawOffsetEast>
    </graphicData>
  </GeneDef>

</Defs>