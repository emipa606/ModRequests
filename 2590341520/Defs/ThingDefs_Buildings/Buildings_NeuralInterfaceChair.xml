<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef>
    <defName>NeuralInterfaceChair</defName>
    <label>Neural Interface Chair</label>
    <thingClass>RimTrust.Core.Interactive.Building_NeuralChair</thingClass>
    <category>Building</category>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <selectable>true</selectable>
	<rotatable>false</rotatable>
    <drawerType>MapMeshAndRealTime</drawerType>
	<graphicData>						   					
	  <texPath>Things/Building/Misc/RimTrust_NIC</texPath>
      <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(3.2,3.2)</drawSize>
<!--      <drawSize>(2.8,2.8)</drawSize> -->
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <blockWind>false</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.4</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>1500</WorkToBuild>
      <Flammability>0.2</Flammability>
      <Mass>50</Mass>
    </statBases>
	<description>Brain-machine-interface for legacy archive access.</description>			 
    <size>(1,1)</size>
    <costList>	
	  <Steel>75</Steel>	
      <Plasteel>25</Plasteel>
      <Gold>20</Gold>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <interactionCellOffset>(0,0,0)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <designationCategory>Misc</designationCategory>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>10000</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>1.0</glowRadius>
        <glowColor>(127,255,255,0)</glowColor>
      </li>
    </comps>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <researchPrerequisites>
      <li>Fabrication</li>
    </researchPrerequisites>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <minifiedDef>MinifiedThing</minifiedDef>
	<thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
  </ThingDef>
</Defs>