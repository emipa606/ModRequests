<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef>
    <defName>TrustLedgerConsole</defName>
    <label>Trust Ledger Console</label>
    <thingClass>RimTrust.Core.Interactive.Building_Terminal</thingClass>
    <category>Building</category>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
	<graphicData>						   					
	  <texPath>Things/Building/Misc/RimTrust_TLC</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2.8,2.8)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <blockWind>false</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.4</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>1500</WorkToBuild>
      <Flammability>0.3</Flammability>
      <Mass>35</Mass>
    </statBases>
	<description>Allows remote access to your trust ledger.</description>			 
    <size>(1,1)</size>
    <costList>							 
      <Steel>75</Steel>
      <Gold>10</Gold>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <designationCategory>Misc</designationCategory>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>false</shortCircuitInRain>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>1.8</glowRadius>
        <glowColor>(127,255,255,0)</glowColor>
      </li>
    </comps>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <minifiedDef>MinifiedThing</minifiedDef>
	<thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
  </ThingDef>
</Defs>