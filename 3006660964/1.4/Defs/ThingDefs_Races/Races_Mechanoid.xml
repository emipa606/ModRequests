<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BaseMechanoidWalker">
        <defName>REP_Mech_Reaper</defName>
        <label>Reaper</label>
        <description>An upgraded version from the older scyther model , made to be robust from anything unlike the scyther that can easily go down , this model was nicknamed reaper due to how effective it was on the battlefield with its strong shield that even can absorb melee contact, heavy armor and blades sharper than the legendary thrumbo horn.</description>
        <tools>
            <li>
                <label>left blade</label>
                <capacities>
                    <li>Cut</li>
                    <li>Stab</li>
                </capacities>
                <power>30</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>LeftBlade</linkedBodyPartsGroup>
                <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
            </li>
            <li>
                <label>right blade</label>
                <capacities>
                    <li>Cut</li>
                    <li>Stab</li>
                </capacities>
                <power>30</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>RightBlade</linkedBodyPartsGroup>
                <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <race>
            <body>REP_reaper</body>
            <baseHealthScale>2.50</baseHealthScale>
            <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
        </race>
        <comps>
			<li Class="VFECore.CompProperties_ShieldBubble">
			  <EnergyShieldRechargeRate>0.1</EnergyShieldRechargeRate>         <!-- Set the shield energy recharge rate -->
			  <EnergyShieldEnergyMax>120</EnergyShieldEnergyMax>               <!-- Set the shield max energy -->
			  <blockRangedAttack>true</blockRangedAttack>                      <!-- Set if it block incoming ranged attack -->
			  <blockMeleeAttack>true</blockMeleeAttack>                       <!-- Set if it block incoming melee attack -->
			  <shieldTexPath>Other/ShieldBubble</shieldTexPath>                <!-- Shield texture path -->
			  <showWhenDrafted>true</showWhenDrafted>                          <!-- Set if it should be showed when the pawn is drafted -->
			  <showAlways>false</showAlways>                                   <!-- Set if it should always be showed -->
			  <showOnHostiles>true</showOnHostiles>                            <!-- Set if it should be showed on hostile pawns -->
			  <showOnNeutralInCombat>true</showOnNeutralInCombat>              <!-- Set if it should be showed on neutral pawns -->
			  <maxShieldSize>1.8</maxShieldSize>                               <!-- Set maximum shield size (when energy is full) -->
			  <minShieldSize>1.4</minShieldSize>                               <!-- Set minimum shield size (when energy is empty) -->
			  <shieldColor>(1, 1, 1, 1)</shieldColor>                          <!-- Set the shield color (can be rgb or rgba) -->
			  <EnergyLossPerDamage>1</EnergyLossPerDamage>                    <!-- Set the damage multiplier (0 mean the shield will never break) -->
			  <disableRotation>true</disableRotation>                          <!-- Set if the shield texture can be rotated -->
			  <absorbDamageSound>EnergyShield_AbsorbDamage</absorbDamageSound> <!-- SoundDef played when absorbing damage -->
			  <brokenSound>EnergyShield_Broken</brokenSound>                   <!-- SoundDef played when the shield break -->
			  <resetSound>EnergyShield_Reset</resetSound>                      <!-- SoundDef played when the shield reset (regenerate) -->
			</li>
        </comps>
        <statBases>
            <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">2</BandwidthCost>
            <MoveSpeed>5.4</MoveSpeed>
            <EnergyShieldRechargeRate>0.2</EnergyShieldRechargeRate>
            <EnergyShieldEnergyMax>1.25</EnergyShieldEnergyMax>
            <ControlTakingTime MayRequire="Ludeon.Rimworld.Biotech">12</ControlTakingTime>
            <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
        </statBases>
    </ThingDef>

    <PawnKindDef ParentName="BaseMechanoidKind">
        <defName>REP_Mech_Reaper</defName>
        <label>Reaper</label>
        <race>REP_Mech_Reaper</race>
        <combatPower>200</combatPower>
        <lifeStages>
            <li MayRequire="Ludeon.Rimworld.Biotech">
                <bodyGraphicData>
                    <texPath>Things/Pawn/Mechanoid/Reaper/Reaper</texPath>
                    <maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Reaper</maskPath>
                    <shaderType>CutoutWithOverlay</shaderType>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.5</drawSize>
                    <shadowData>
                        <volume>(0.4, 0.8, 0.4)</volume>
                    </shadowData>
                </bodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Mechanoid/Reaper/Reaper</texPath>
                    <maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Reaper</maskPath>
                    <shaderType>CutoutWithOverlay</shaderType>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.5</drawSize>
                    <shadowData>
                        <volume>(0.4, 0.8, 0.4)</volume>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponMoney>0~0</weaponMoney>
        <defendPointRadius>0</defendPointRadius>
        <weaponTags>
        </weaponTags>
        <techHediffsChance>1</techHediffsChance>
        <techHediffsMoney>9999~9999</techHediffsMoney>
    </PawnKindDef>
</Defs>