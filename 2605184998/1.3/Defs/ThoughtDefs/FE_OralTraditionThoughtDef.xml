<Defs>
	<ThoughtDef>
		<defName>TerribleRevelation</defName>
		<thoughtClass>Thought_AttendedRitual</thoughtClass>
		<durationDays>6</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
		  <li>
			<label>terrible ritual</label>
			<description>Our ways are all but lost!</description>
			<baseMoodEffect>-6</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>

  <ThoughtDef>
    <defName>BadSpokenTradition</defName>
    <thoughtClass>Thought_AttendedRitual</thoughtClass>
    <durationDays>6</durationDays>
    <stackLimit>3</stackLimit>
    <stages>
      <li>
        <label>bad ritual</label>
        <description>Our traditions are murky and uncertain.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SatisfyingExpositionofLore</defName>
    <thoughtClass>Thought_AttendedRitual</thoughtClass>
    <durationDays>6</durationDays>
    <stackLimit>3</stackLimit>
    <stages>
      <li>
        <label>satisfying ritual</label>
        <description>We are following the right way of living.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SpectacularRevelationOfProphesy</defName>
    <thoughtClass>Thought_AttendedRitual</thoughtClass>
    <durationDays>6</durationDays>
    <stackLimit>3</stackLimit>
    <stages>
      <li>
        <label>inspiring ritual</label>
        <description>Our ancestors smile upon us for following their ways so well!</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>RecentOralTradition_Honored</defName>
    <workerClass>PreceptsPlusPlus.ThoughtWorker_Precept_OralTradition</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>recent cultural exposition</label>
        <description>We recently heard the stories of our ancestors. We make them proud!</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
      <li>
        <label>no recent cultural exposition</label>
        <description>It's been far too long since we heard about our culture. We're straying from the path!</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>RecentOralTradition_Respected</defName>
    <workerClass>PreceptsPlusPlus.ThoughtWorker_Precept_OralTradition</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>recent cultural exposition</label>
        <description>We recently heard the stories of our culture.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
      <li>
        <label>no recent cultural exposition</label>
        <description>It's been a while since we heard about our culture. We might need to do so soon.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>