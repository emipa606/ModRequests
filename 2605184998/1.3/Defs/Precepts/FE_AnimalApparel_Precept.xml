<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- History events -->
  <HistoryEventDef>
    <defName>WoreAnimalMaterial</defName>
    <label>wore apparel made from animals</label>
  </HistoryEventDef>
  
  <!-- Issue -->
  <IssueDef>
    <defName>AnimalMaterialSource</defName>
    <label>animal apparel material</label>
    <iconPath>UI/Precepts/AnimalApparelSymbol</iconPath>
  </IssueDef>

  <!-- Precepts -->
  <PreceptDef>
    <defName>AnimalApparel_Prohibited</defName>
    <issue>AnimalMaterialSource</issue>
    <label>prohibited</label>
    <description>We should never wear clothes made from animals.</description>
    <impact>High</impact>
    <!--<likesAnimalLeatherApparel>false</likesAnimalLeatherApparel>-->
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <requiredMemes>
      <li>AnimalPersonhood</li>
    </requiredMemes>
    <associatedMemes>
      <li>AnimalPersonhood</li>
      <li>NaturePrimacy</li>
    </associatedMemes>
    <conflictingMemes>
      <li>HumanPrimacy</li>
      <li>Rancher</li>
    </conflictingMemes>
    <disallowHuntingCamps>true</disallowHuntingCamps>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <description>Animal leather apparel forbidden</description>
        <thought>AnimalApparel_Horrible</thought>
      </li>
    </comps>
  </PreceptDef>
  
  <PreceptDef>
    <defName>AnimalApparel_Disapproved</defName>
    <issue>AnimalMaterialSource</issue>
    <label>disapproved</label>
    <description>It's not nice to wear clothing made from animals.</description>
    <impact>Medium</impact>
    <!--<likesAnimalLeatherApparel>false</likesAnimalLeatherApparel>-->
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <requiredMemes>
      <li>AnimalPersonhood</li>
    </requiredMemes>
    <associatedMemes>
      <li>AnimalPersonhood</li>
      <li>NaturePrimacy</li>
    </associatedMemes>
    <conflictingMemes>
      <li>HumanPrimacy</li>
      <li>Rancher</li>
    </conflictingMemes>
    <disallowHuntingCamps>true</disallowHuntingCamps>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <description>Animal leather apparel disapproved</description>
        <thought>AnimalApparel_Disapproved</thought>
      </li>
    </comps>
  </PreceptDef>
    
  <PreceptDef>
    <defName>AnimalApparel_Dontcare</defName>
    <issue>AnimalMaterialSource</issue>
    <label>Don't care</label>
    <description>We don't care whether our clothes are made from animal materials or not.</description>
    <impact>Low</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>100</displayOrderInImpact>
  </PreceptDef>
  
  <PreceptDef>
    <defName>AnimalApparel_Preferred</defName>
    <issue>AnimalMaterialSource</issue>
    <label>preferred</label>
    <description>It's a good idea to wear clothes made from animals.</description>
    <impact>Medium</impact>
    <!--<likesAnimalLeatherApparel>true</likesAnimalLeatherApparel>-->
    <displayOrderInIssue>20</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <requiredMemes>
      <li>Rancher</li>
    </requiredMemes>
    <associatedMemes>
      <li>Rancher</li>
      <li>HumanPrimacy</li>
    </associatedMemes>
    <conflictingMemes>
      <li>AnimalPersonhood</li>
      <li>NaturePrimacy</li>
      <li>Nudism</li>
    </conflictingMemes>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <description>Animal leather apparel prefered</description>
        <thought>AnimalApparel_Preferred</thought>
      </li>
    </comps>
  </PreceptDef>
  
  <PreceptDef>
    <defName>AnimalApparel_Required</defName>
    <issue>AnimalMaterialSource</issue>
    <label>required</label>
    <description>We should always wear clothes made from animals.</description>
    <impact>High</impact>
    <!--<likesAnimalLeatherApparel>true</likesAnimalLeatherApparel>-->
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <requiredMemes>
      <li>Rancher</li>
    </requiredMemes>
    <associatedMemes>
      <li>Rancher</li>
      <li>HumanPrimacy</li>
    </associatedMemes>
    <conflictingMemes>
      <li>AnimalPersonhood</li>
      <li>NaturePrimacy</li>
      <li>Nudism</li>
    </conflictingMemes>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <description>Animal leather apparel required</description>
        <thought>AnimalApparel_Required</thought>
      </li>
    </comps>
  </PreceptDef>
    

</Defs>