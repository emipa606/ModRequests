<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■PLANT■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
<ThingDef ParentName="PlantBase">
    <defName>DS-B_DEVILSTRAND-B_DEF</defName>
    <label>devilstrand-B</label>
    <description>This fragile mushroom was genetically engineered to produce a silk net that is both difficult to tear and soft to the touch. While the mushroom takes a very long time to grow, only exotic ultra-tech fabrics outperform its devilstrand fibers.\n\n This substrain's cytoplasm has blue pigmentation.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plant/DevilstrandBlue</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <growDays>22.5</growDays>
      <sowWork>400</sowWork>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>DS-B_DEVILSTRAND-B_CLOTH_DEF</harvestedThingDef>
      <harvestYield>6</harvestYield>
      <neverBlightable>true</neverBlightable>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowMinSkill>10</sowMinSkill>
      <sowResearchPrerequisites>
        <li>Devilstrand</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>

<!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■RESOURCE■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
<ThingDef ParentName="ResourceBase">
    <defName>DS-B_DEVILSTRAND-B_CLOTH_DEF</defName>
    <label>devilstrand-B</label>
    <description>Fabric spun from microfibers extracted from devilstrand B-strain mushrooms. It is very tough, good at insulating, and protects exceptionally well against flame.</description>
    <graphicData>
      <texPath>Resource/DevilstrandBlue</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>5.5</MarketValue>
      <Mass>0.032</Mass>
      <Flammability>0.4</Flammability>
      <DeteriorationRate>3</DeteriorationRate>
      <StuffPower_Armor_Sharp>1.40</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.36</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>3.00</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>20</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>24</StuffPower_Insulation_Heat>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <stuffProps>
      <categories>
        <li>Fabric</li>
      </categories>
      <commonality>0.20</commonality>
      <color>(26,122,255)</color>
      <statFactors>
        <Flammability>0.4</Flammability>
        <MaxHitPoints>1.3</MaxHitPoints>
        <Beauty>3.2</Beauty>
      </statFactors>
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
</ThingDef>
  
</Defs>
