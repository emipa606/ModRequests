<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<GeneDef Name="GeneWeaponAptitudeBase" Abstract="True">
		<displayCategory>Violence</displayCategory>
	</GeneDef>
	<GeneDef ParentName="GeneWeaponAptitudeBase">
		<defName>SEX_MeleeWeaponAptitude</defName>
		<label>melee weapon aptitude</label>
		<labelShortAdj>melee</labelShortAdj>
		<description>Carriers of this gene are better at using melee weapons.</description>
		<iconPath>UI/SEX_AptitudeMelee</iconPath>
		<displayOrderInCategory>60</displayOrderInCategory>
		<statFactors>
			<MeleeHitChance>1.5</MeleeHitChance>
		</statFactors>
		<biostatCpx>2</biostatCpx>
		<biostatMet>-3</biostatMet>
		<symbolPack>
			<wholeNameSymbols>
				<li>
					<symbol>boxer</symbol>
				</li>
				<li>
					<symbol>scrapper</symbol>
				</li>
			</wholeNameSymbols>
			<prefixSymbols>
				<li>
					<symbol>brawl</symbol>
				</li>
				<li>
					<symbol>melee</symbol>
				</li>
				<li>
					<symbol>scrap</symbol>
				</li>
			</prefixSymbols>
		</symbolPack>
	</GeneDef>
	<GeneDef ParentName="GeneWeaponAptitudeBase">
		<defName>SEX_RangedWeaponAptitude</defName>
		<label>ranged weapon aptitude</label>
		<labelShortAdj>ranger</labelShortAdj>
		<description>Carriers of this gene are better at using ranged weapons.</description>
		<iconPath>UI/SEX_AptitudeRanged</iconPath>
		<displayOrderInCategory>60</displayOrderInCategory>
		<statFactors>
			<ShootingAccuracyPawn>1.5</ShootingAccuracyPawn>
		</statFactors>
		<biostatCpx>2</biostatCpx>
		<biostatMet>-3</biostatMet>
		<symbolPack>
			<wholeNameSymbols>
				<li>
					<symbol>shooter</symbol>
				</li>
				<li>
					<symbol>marksman</symbol>
				</li>
			</wholeNameSymbols>
			<prefixSymbols>
				<li>
					<symbol>gun</symbol>
				</li>
				<li>
					<symbol>bow</symbol>
				</li>
				<li>
					<symbol>aim</symbol>
				</li>
			</prefixSymbols>
		</symbolPack>
	</GeneDef>
</Defs>
