<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="COF_Torture_Apparel">
        <defName>COF_Torture_Apparel_SuffocateCollar</defName>
        <label>便携式窒息项圈</label>
        <description>一种可以佩戴在身上，持续给予窒息感的项圈。可以作为刑具，也可以作为性玩具——取决于使用者。</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/SlaveCollar/SlaveCollar</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.8</drawSize>
        </graphicData>
        <tradeability>All</tradeability>
        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <WorkToMake>180</WorkToMake>
            <Mass>0.14</Mass>
            <EquipDelay>2.0</EquipDelay>
        </statBases>
    	<costStuffCount>80</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <thingCategories>
            <li>COF_Torture_PortableJobToy</li>
        </thingCategories>
        <apparel>
            <countsAsClothingForNudity>True</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>Neck</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
        </apparel>
    	<comps>
    		<li Class="COF_Torture.Component.CompProperties_CauseHediff_Apparel">
    			<hediff>COF_Torture_SuffocateCollar_Apparel</hediff>
                <part>Head</part>
    		</li>
        </comps>
    </ThingDef>
    <HediffDef ParentName="COF_Torture_Hediffs_ApparelBase">
        <defName>COF_Torture_SuffocateCollar_Apparel</defName>
        <label>窒息项圈</label>
        <description>窒息了，减少意识的同时心灵和肉体变得更加敏感。</description>
        <maxSeverity>10</maxSeverity>
        <comps>
            <li Class="COF_Torture.HediffComp.HediffCompProperties_SwitchAbleSeverity" />
        </comps>
        <stages>
            <li>
                <minSeverity>0.01</minSeverity>
                <label>未启用</label>
            </li>
            <li>
                <minSeverity>1</minSeverity>
                <label>呼吸受限</label>
                <painOffset>0.1</painOffset>
                <painFactor>1.2</painFactor>
                <statOffsets>
                    <PsychicSensitivity>0.15</PsychicSensitivity>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.3</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>2.5</minSeverity>
                <label>用力收紧</label>
                <painOffset>0.3</painOffset>
                <painFactor>1.5</painFactor>
                <statOffsets>
                    <PsychicSensitivity>0.25</PsychicSensitivity>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.4</offset>
                        <setMax>0.8</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>5</minSeverity>
                <label>勒入肉中</label>
                <painOffset>0.3</painOffset>
                <painFactor>2</painFactor>
                <statOffsets>
                    <PsychicSensitivity>0.5</PsychicSensitivity>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.5</offset>
                        <setMax>0.6</setMax>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>-0.06</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>7</minSeverity>
                <label>极限尺寸</label>
                <painOffset>0.3</painOffset>
                <painFactor>2.5</painFactor>
                <statOffsets>
                    <PsychicSensitivity>0.75</PsychicSensitivity>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.6</offset>
                        <setMax>0.3</setMax>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>-0.15</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>9</minSeverity>
                <label>嵌入骨骼</label>
                <painOffset>0.5</painOffset>
                <painFactor>3</painFactor>
                <statOffsets>
                    <PsychicSensitivity>1</PsychicSensitivity>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.8</offset>
                        <setMax>0.2</setMax>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>-0.3</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
</Defs>