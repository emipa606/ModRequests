<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="COF_Torture_Apparel">
        <defName>COF_Torture_Apparel_ElectricShockCollar</defName>
        <label>便携式电击项圈</label>
        <description>一种可以佩戴在身上，给予电击的项圈。可以用于防止奴隶越狱，也可以作为性玩具——取决于使用者。</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/SlaveCollar/SlaveCollar</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.8</drawSize>
        </graphicData>
        <uiIconPath>Things/Pawn/Humanlike/Apparel/SlaveCollar/SlaveCollar</uiIconPath>
        <uiIconColor>(114,114,114)</uiIconColor>
        <tradeability>All</tradeability>
        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <WorkToMake>180</WorkToMake>
            <Mass>0.14</Mass>
            <EquipDelay>2.0</EquipDelay>
        </statBases>
    	<costStuffCount>30</costStuffCount>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costList>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <thingCategories>
            <li>COF_Torture_PortableJobToy</li>
        </thingCategories>
        <apparel>
            <countsAsClothingForNudity>True</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>Neck</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
        </apparel>
    	<comps>
    		<li Class="COF_Torture.Component.CompProperties_CauseHediff_Apparel">
    			<hediff>COF_Torture_ElectricShockCollar_Apparel</hediff>
                <part>Head</part>
    		</li>
        </comps>
    </ThingDef>
    <HediffDef ParentName="COF_Torture_Hediffs_ApparelBase">
        <defName>COF_Torture_ElectricShockCollar_Apparel</defName>
        <label>电击项圈</label>
        <description>正在被电击中。</description>
        <maxSeverity>10</maxSeverity>
        <comps>
            <li Class="COF_Torture.Component.HediffCompProperties_SwitchAbleSeverity" />
        </comps>
        <stages>
            <li>
                <minSeverity>0.01</minSeverity>
                <label>未启用</label>
            </li>
            <li>
                <minSeverity>1</minSeverity>
                <overrideLabel>低压电击</overrideLabel>
                <extraTooltip>电压很低，麻麻的。</extraTooltip>
                <painOffset>0.1</painOffset>
            </li>
            <li>
                <minSeverity>2.5</minSeverity>
                <overrideLabel>中压电击</overrideLabel>
                <extraTooltip>逐渐升高的电压带来了疼痛，肉体的感知也更加敏感。</extraTooltip>
                <painOffset>0.3</painOffset>
                <painFactor>1.2</painFactor>
            </li>
            <li>
                <minSeverity>5</minSeverity>
                <overrideLabel>高压电击</overrideLabel>
                <extraTooltip>神经紊乱，无法控制自己的动作。</extraTooltip>
                <painOffset>0.5</painOffset>
                <painFactor>1.5</painFactor>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.5</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.5</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>7</minSeverity>
                <overrideLabel>超高压电击</overrideLabel>
                <extraTooltip>时间太长的话肯定会死去。</extraTooltip>
                <painOffset>1</painOffset>
                <painFactor>0.5</painFactor>
                <statOffsets>
                    <PsychicSensitivity>0.75</PsychicSensitivity>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.8</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.8</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>-0.2</postFactor>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>9</minSeverity>
                <overrideLabel>致死电击</overrideLabel>
                <extraTooltip>就快要烧焦了。</extraTooltip>
                <painOffset>5</painOffset>
                <painFactor>0.1</painFactor>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-1</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-1</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>-0.8</postFactor>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
</Defs>