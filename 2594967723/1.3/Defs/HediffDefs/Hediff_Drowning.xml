<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<HediffDef>
		<defName>PD_Drowning</defName>
		<label>drowning</label>
		<description>drowning</description>
		<lethalSeverity>1</lethalSeverity>
		<defaultLabelColor>(0.6, 0.6, 0.9)</defaultLabelColor>
		<stages>
			<li>
				<label>drowning</label>
			</li>
			<li>
				<minSeverity>0.55</minSeverity>
				<label>drowning (serious)</label>
				<lifeThreatening>true</lifeThreatening>
			</li>
			<li>
				<minSeverity>0.80</minSeverity>
				<label>almost drowned</label>
				<lifeThreatening>true</lifeThreatening>
			</li>
			<li>
				<minSeverity>0.99</minSeverity>
				<label>drowned</label>
			</li>
		</stages>
	</HediffDef> 

</Defs>