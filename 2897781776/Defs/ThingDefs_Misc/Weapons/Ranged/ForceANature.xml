<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_ForceANature</defName>
    <label>force a nature blast</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <stoppingPower>8</stoppingPower>
      <armorPenetrationBase>0.08</armorPenetrationBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_ForceANature</defName>
    <label>force-a-nature</label>
    <description>It is a large double-barreled hunting shotgun with sawn-off barrels and a wooden stock and foregrip.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Force-A-Nature</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <weaponClasses>
      <li>ShortShots</li>
    </weaponClasses>
    <weaponTags>
      <li>ShortShots</li>
    </weaponTags>
    <statBases>
        <WorkToMake>15000</WorkToMake>
        <Mass>2.8</Mass>
        <AccuracyTouch>0.80</AccuracyTouch>
        <AccuracyShort>0.64</AccuracyShort>
        <AccuracyMedium>0.42</AccuracyMedium>
        <AccuracyLong>0.21</AccuracyLong>
        <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <WoodLog>70</WoodLog>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <displayPriority>430</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ForceANature</defaultProjectile>
        <warmupTime>0.7</warmupTime>
        <range>12.9</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>25</ticksBetweenBurstShots>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>