<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SMGTF</defName>
    <label>SMG bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>8</damageAmountBase>
      <stoppingPower>0.4</stoppingPower>
      <speed>48</speed>
    </projectile>
  </ThingDef>
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_SMGTF</defName>
    <label>SMG</label>
    <description>The SMG deals a low amount of damage per shot, but has a high rate of fire and surprisingly high accuracy, firing 10 bullets per second at 600 rounds per minute.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/SMGTF</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <weaponClasses>
      <li>ShortShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>440</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>22000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>1.33</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <WoodLog>15</WoodLog>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SMGTF</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>22.9</range>
        <burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <soundCast>Shot_HeavySMG</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>ShortShots</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>