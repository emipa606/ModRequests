    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>1.6</deepCommonality>
    <deepCountPerPortion>11</deepCountPerPortion>
    <deepLumpSizeRange>2~7</deepLumpSizeRange>
