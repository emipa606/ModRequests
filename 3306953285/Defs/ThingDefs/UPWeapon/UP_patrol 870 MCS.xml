<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>patrol870MCS_UP</defName>
    <label>patrol 870 MCS</label>
    <description>An ancient design of shotgun that emits a tight-packed spray of pellets. Deadly, but short range.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
    <drawSize>1.2</drawSize>
      <texPath>Things/UPWeapon/patrol 870 MCS</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <weaponClasses>
      <li>ShortShots</li>
    </weaponClasses>
    <weaponTags>
      <li>ShortShots</li>
      <li>PumpShotgun</li>
    </weaponTags>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>3.4</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
	  <Gun_PumpShotgun>1</Gun_PumpShotgun>
    </costList>
    <recipeMaker>
	  <researchPrerequisite>Gunsmithing</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_patrol870MCS_UP</defaultProjectile>
        <warmupTime>0.8</warmupTime>
        <range>17</range>
        <soundCast>patrol870MCS</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_patrol870MCS_UP</defName>
    <label>patrol 870 MCS projectile</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>20</damageAmountBase>
      <stoppingPower>3</stoppingPower>
      <armorPenetrationBase>0.14</armorPenetrationBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  
  </Defs>