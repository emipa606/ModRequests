<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>USAAR_UP</defName>
    <label>USA.AR-15</label>
    <description>Justice Rifle, buddy!</description>
    <graphicData>
      <texPath>Things/UPWeapon/USAAR</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.3</drawSize>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>4.8</Mass>
      <AccuracyTouch>0.30</AccuracyTouch>
      <AccuracyShort>0.45</AccuracyShort>
      <AccuracyMedium>0.95</AccuracyMedium>
      <AccuracyLong>1</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Gun_AssaultRifle>1</Gun_AssaultRifle>
      <Gun_ChargeLance>1</Gun_ChargeLance>
	  <Gun_ChargeRifle>1</Gun_ChargeRifle>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_USAAR_UP</defaultProjectile>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <warmupTime>1.5</warmupTime>
        <range>45</range>
        <soundCast>USAAR</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <tradeTags>
      <li>WeaponRanged</li>
    </tradeTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
	<equippedStatOffsets>
	</equippedStatOffsets>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_USAAR_UP</defName>
    <label>USA.AR-15 Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>25</damageAmountBase>
	  <armorPenetrationBase>0.75</armorPenetrationBase>
	  <stoppingPower>1.5</stoppingPower>
      <speed>110</speed>
    </projectile>
  </ThingDef>
  
  </Defs>