<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>LAMG_UP</defName>
    <label>LAMG</label>
    <description>The old light machine gun, due to its shortcomings in other aspects, has undergone a complete transformation. We have refitted it to turn it into a true war-waging weapon.</description>
    <graphicData>
      <texPath>Things/UPWeapon/LAMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.3</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>7200</WorkToMake>
      <Mass>8</Mass>
      <AccuracyTouch>0.45</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>10</Plasteel>
      <ComponentIndustrial>2</ComponentIndustrial>
	  <Gun_LMG>1</Gun_LMG>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_LAMG_UP</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>28</range>
        <burstShotCount>6</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>LAMG</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
      <li>Autopistol</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
	<equippedStatOffsets>
		<HuntingStealth>0.50</HuntingStealth>
	</equippedStatOffsets>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_LAMG_UP</defName>
    <label>LAMG Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>13</damageAmountBase>
	  <armorPenetrationBase>0.18</armorPenetrationBase>
	  <stoppingPower>1</stoppingPower>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  
  </Defs>