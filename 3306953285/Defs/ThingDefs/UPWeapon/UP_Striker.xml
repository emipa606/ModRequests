<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Striker_UP</defName>
    <label>Striker</label>
    <description>The old-fashioned magazine-fed ammunition system, plagued by short range and low accuracy, has undergone reinforcing modifications to address these issues.</description>
    <graphicData>
      <texPath>Things/UPWeapon/Striker</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.3</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
    </statBases>
    <costList>
	  <Steel>25</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
	  <Gun_ChainShotgun>1</Gun_ChainShotgun>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Striker_UP</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>15</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>Striker</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>ShortShots</li>
      <li>PumpShotgun</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
	<equippedStatOffsets>
	</equippedStatOffsets>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Striker_UP</defName>
    <label>Striker Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
	  <armorPenetrationBase>0.16</armorPenetrationBase>
	  <stoppingPower>3</stoppingPower>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  
  </Defs>