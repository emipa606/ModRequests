<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>MW3M16A4_UP</defName>
    <label>MW3 M16A4</label>
    <description>The ancient standard military weapon, born for war, has undergone temporary modifications to further enhance its capabilities as a formidable war tool.</description>
    <graphicData>
      <texPath>Things/UPWeapon/MW3M16A4</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.5</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.70</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <ComponentIndustrial>3</ComponentIndustrial>
	  <Plasteel>5</Plasteel>
	  <Gun_AssaultRifle>1</Gun_AssaultRifle>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MW3M16A4_UP</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>35</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>MW3M16A4</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>AssaultRifle</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
	<equippedStatOffsets>
	</equippedStatOffsets>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_MW3M16A4_UP</defName>
    <label>MW3 M16A4 Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
	  <armorPenetrationBase>0.20</armorPenetrationBase>
	  <stoppingPower>0.5</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  
  </Defs>