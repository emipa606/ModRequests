<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>APC9K_UP</defName>
    <label>APC9K</label>
    <description>The old submachine gun suffered from issues of short range and low power.\nTherefore, we have carried out a complete overhaul, increasing its range, enhancing its power, and improving its firing rate and penetration capabilities.</description>
    <graphicData>
      <texPath>Things/UPWeapon/APC9K</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.1</drawSize>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>1800</WorkToMake>
      <Mass>1.5</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>0.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>15</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
	  <Gun_MachinePistol>1</Gun_MachinePistol>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_APC9K_UP</defaultProjectile>
        <warmupTime>0.4</warmupTime>
        <range>22</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCast>APC9K</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
      <li>Autopistol</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
	<equippedStatOffsets>
		<HuntingStealth>0.50</HuntingStealth>
	</equippedStatOffsets>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_APC9K_UP</defName>
    <label>APC9K Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>9</damageAmountBase>
	  <armorPenetrationBase>0.13</armorPenetrationBase>
	  <stoppingPower>0.5</stoppingPower>
      <speed>60</speed>
    </projectile>
  </ThingDef>
  
  </Defs>