<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>MP40M20T_UP</defName>
    <label>M&amp;P40 M2.0 T</label>
    <description>The antique automatic pistol, lacking in firepower and range, has undergone tactical modifications to endow it with greater lethality and close-range accuracy.</description>
    <graphicData>
      <texPath>Things/UPWeapon/MP40 M2.0 T</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>0.7</drawSize>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.99</AccuracyTouch>
      <AccuracyShort>0.95</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.30</AccuracyLong>
      <RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
	  <Gun_Autopistol>1</Gun_Autopistol>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MP40M20T_UP</defaultProjectile>
        <warmupTime>0.2</warmupTime>
        <range>28</range>
        <soundCast>MP40M20T</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
      <li>Autopistol</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
	<equippedStatOffsets>
		<HuntingStealth>0.50</HuntingStealth>
	</equippedStatOffsets>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_MP40M20T_UP</defName>
    <label>M&amp;P40 M2.0 T Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>13</damageAmountBase>
	  <armorPenetrationBase>0.16</armorPenetrationBase>
	  <stoppingPower>0.8</stoppingPower>
      <speed>60</speed>
    </projectile>
  </ThingDef>
  
  </Defs>