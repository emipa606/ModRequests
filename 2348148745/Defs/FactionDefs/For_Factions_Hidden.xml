<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<FactionDef ParentName="FactionBase">
<defName>Forerunner</defName>
    <label>Forerunner</label>
    <pawnSingular>Construct</pawnSingular>
    <pawnsPlural>Constructs</pawnsPlural>
	<categoryTag>Forerunner</categoryTag>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
	<canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
	<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
	<displayInFactionSelection>false</displayInFactionSelection>
    <fixedName>Forerunner</fixedName>
    <factionIconPath>World/WorldObjects/Expanding/Sites/Manhunters</factionIconPath>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(300,  0.5)</li>
        <li>(700,  2)</li>
        <li>(1400, 3)</li>
        <li>(2800, 5)</li>
        <li>(4000, 10)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>true</hidden>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>false</canUseAvoidGrid>
    <techLevel>Animal</techLevel>
	 <backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
      </li>
    </backstoryFilters>
	<earliestRaidDays>45</earliestRaidDays>
	<hostileToFactionlessHumanlikes>false</hostileToFactionlessHumanlikes>
	 <maxPawnCostPerTotalPointsCurve>
      <points>
		<li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(800, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
	    <pawnGroupMakers>
      <li>
        <!-- All types-->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Sentinel>100</Sentinel>
		  <SentinelMajor>20</SentinelMajor>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <allowedArrivalTemperatureRange>-100~100</allowedArrivalTemperatureRange>
  </FactionDef>

</Defs>
