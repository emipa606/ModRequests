<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <FactionDef ParentName="FactionBase">
    <defName>Forerunner</defName>
    <label>Forerunner</label>
    <pawnSingular>Construct</pawnSingular>
    <pawnsPlural>Constructs</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>Forerunner</fixedName>
    <factionIconPath>World/WorldObjects/Expanding/Sites/Manhunters</factionIconPath>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(300,  0.5)</li>
        <li>(700,  2)</li>
        <li>(1400, 3)</li>
        <li>(2800, 5)</li>
        <li>(4000, 10)</li>
      </points>
    </raidCommonalityFromPointsCurve>
