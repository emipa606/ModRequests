    <hidden>true</hidden>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>false</canUseAvoidGrid>
    <techLevel>Ultra</techLevel>
	 <backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
      </li>
    </backstoryFilters>
	<earliestRaidDays>45</earliestRaidDays>
	<hostileToFactionlessHumanlikes>False</hostileToFactionlessHumanlikes>
	 <maxPawnCostPerTotalPointsCurve>
      <points>
		<li>(0,25)</li>
		<li>(70, 50)</li>
        <li>(400,200)</li>
        <li>(900,300)</li>
        <li>(100000,10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
	    <pawnGroupMakers>
      <li>
        <!-- All types-->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Sentinel>100</Sentinel>
		  <SentinelMajor>20</SentinelMajor>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <allowedArrivalTemperatureRange>-100~100</allowedArrivalTemperatureRange>
  </FactionDef>

</Defs>
