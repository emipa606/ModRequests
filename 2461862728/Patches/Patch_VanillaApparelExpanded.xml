                        <skillRequirements>
                            <Crafting>6</Crafting> <!--Vanilla: 0-->
                        </skillRequirements>
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_ShirtandTie"]/recipeMaker/skillRequirements/Crafting</xpath>
