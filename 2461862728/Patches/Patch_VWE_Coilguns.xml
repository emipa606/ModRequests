<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
    <!--Vanilla Weapons Expanded - Coilguns-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded - Coilguns</li>
        </mods>
        
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_GaussRifle"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>16</Crafting> <!--Vanilla: 7-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_GaussMagnum"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_GaussLance"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>16</Crafting> <!--Vanilla: 10-->
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>