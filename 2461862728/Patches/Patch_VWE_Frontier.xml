<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
    <!--Vanilla Weapons Expanded - Frontier-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded - Frontier</li>
        </mods>
        
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWEFT_Gun_HeavyRevolver"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>6</Crafting> <!--Vanilla: 4-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWEFT_Gun_VolcanicPistol"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>6</Crafting> <!--Vanilla: 5-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWEFT_Gun_FrontierPistol"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>6</Crafting> <!--Vanilla: 5-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWEFT_Gun_RollingBlockRifle"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>8</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWEFT_Gun_RepeatingShotgun"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>8</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <!--Coilguns-->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Weapons Expanded - Coilguns</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="VWEFT_Gun_GaussRevolver"]/recipeMaker/skillRequirements/Crafting</xpath>
                                <value>
                                    <Crafting>14</Crafting> <!--Vanilla: 6-->
                                </value>
                            </li>
                            
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="VWEFT_Gun_GaussRepeater"]/recipeMaker/skillRequirements/Crafting</xpath>
                                <value>
                                    <Crafting>16</Crafting> <!--Vanilla: 7-->
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
                
                <!--Heavy Weapons-->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Weapons Expanded - Heavy Weapons</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="VWEFT_Gun_HandheldGatlingGun"]/recipeMaker/skillRequirements/Crafting</xpath>
                                <value>
                                    <Crafting>14</Crafting> <!--Vanilla: 7-->
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>