<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
    <!--Vanilla Weapons Expanded - Coilguns-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded - Heavy Weapons</li>
        </mods>
        
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_Autocannon"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_HandheldMortar"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_HeavyFlamer"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_SwarmMissileLauncher"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_UraniumSlugRifle"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 6-->
