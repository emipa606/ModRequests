<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
    <!--Vanilla Armour Expanded-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Armour Expanded</li>
        </mods>
        
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_AdvancedVest"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>10</Crafting> <!--Vanilla: 5-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Headgear_TrooperHelmet"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>12</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_TrooperArmor"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>12</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Headgear_HeavyMarineHelmet"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>18</Crafting> <!--Vanilla: 9-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_HeavyMarineArmor"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>18</Crafting> <!--Vanilla: 9-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Footwear_MarineBoots"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 8-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Handwear_MarineGloves"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 8-->
                    </value>
                </li>
                
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Royalty</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="VAE_Headgear_RoyalTrooperHelmet"]/recipeMaker/skillRequirements/Crafting</xpath>
                                <value>
                                    <Crafting>14</Crafting> <!--Vanilla: 6-->
                                </value>
                            </li>
                            
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="VAE_Apparel_RoyalTrooperArmor"]/recipeMaker/skillRequirements/Crafting</xpath>
                                <value>
                                    <Crafting>14</Crafting> <!--Vanilla: 6-->
                                </value>
                            </li>
                            
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="VAE_Headgear_RoyalSiegeHelmet"]/recipeMaker/skillRequirements/Crafting</xpath>
                                <value>
                                    <Crafting>20</Crafting> <!--Vanilla: 9-->
                                </value>
                            </li>
                            
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="VAE_Apparel_RoyalSiegeArmor"]/recipeMaker/skillRequirements/Crafting</xpath>
                                <value>
                                    <Crafting>20</Crafting> <!--Vanilla: 9-->
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>