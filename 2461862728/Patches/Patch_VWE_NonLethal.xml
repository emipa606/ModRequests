<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
    <!--Vanilla Weapons Expanded - Coilguns-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded - Non-Lethal</li>
        </mods>
        
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_Taser"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>14</Crafting> <!--Vanilla: 10-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_RubberBulletPistol"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>10</Crafting> <!--Vanilla: 4-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_DartGun"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>12</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_Gun_TearGasLauncher"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>12</Crafting> <!--Vanilla: 4-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_StunBaton"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>12</Crafting> <!--Vanilla: 3-->
                    </value>
                </li>
                
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VWE_TearGasGrenade"]/recipeMaker/skillRequirements/Crafting</xpath>
                    <value>
                        <Crafting>8</Crafting> <!--Vanilla: 6-->
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>