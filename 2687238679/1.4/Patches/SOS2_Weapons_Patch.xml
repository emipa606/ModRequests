<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Save Our Ship 2</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!--    Hologram weapons    -->

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "HologramLaser"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_none</li>
                        </weaponTags>
                    </value>
                </li>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "HologramLaserArchotech"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_none</li>
                        </weaponTags>
                    </value>
                </li>
                
            </operations>
        </match>
    </Operation>
</Patch>