<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "VWE_Tool_Whip"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_none</li>
                        </weaponTags>
                    </value>
                </li>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "VWE_Throwing_Rocks"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_none</li>
                        </weaponTags>
                    </value>
                </li>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "VWE_Bow_Compound"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_industrial</li>
                        </weaponTags>
                    </value>
                </li>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "VWE_Gun_Flintlock"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_primitive_fire</li>
                        </weaponTags>
                    </value>
                </li>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "VWE_Gun_Musket"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_primitive_fire</li>
                        </weaponTags>
                    </value>
                </li>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "VWE_Gun_FireExtinguisher"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_none</li>
                        </weaponTags>
                    </value>
                </li>
                
            </operations>
        </match>
    </Operation>
</Patch>