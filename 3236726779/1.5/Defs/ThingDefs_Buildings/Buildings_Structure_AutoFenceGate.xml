<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="DoorBase">
    <defName>AutoFenceGate</defName>
    <label>auto fence gate</label>
    <description>A simple gate made of posts and crossbars. It blocks some animals like a fence. Handlers can lead animals in and out of the pen through these gates. Powered operation allows people and animal to move through the door without slowing down.</description>
    <uiOrder>2031</uiOrder>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <WorkToBuild>500</WorkToBuild>
      <DoorOpenSpeed>1.15</DoorOpenSpeed>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Door/AutoFenceGate_Mover</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shadowData>
        <volume>(0.3, 0.5, 0.3)</volume>
      </shadowData>
      <damageData>
        <!--  no damage marks because they don't move with the door -->
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Door/AutoFenceGate_MenuIcon</uiIconPath>
    <costStuffCount>25</costStuffCount>
    <costList>
      <Steel>25</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>25</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Styleable" />
    </comps>
    <holdsRoof>false</holdsRoof>
    <blockWeather>true</blockWeather>
    <staticSunShadowHeight>0</staticSunShadowHeight> <!-- disable static shadow -->
    <blockWind>false</blockWind>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <relatedBuildCommands>
        <li>Fence</li>
        <li>PenMarker</li>
      </relatedBuildCommands>
      <blueprintGraphicData>
        <texPath>Things/Building/Door/FenceGate_Blueprint</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
      </blueprintGraphicData>
      <preferConnectingToFences>true</preferConnectingToFences>
      <soundDoorOpenManual>Door_FenceGateManual</soundDoorOpenManual>
      <soundDoorCloseManual>Door_FenceGateManual</soundDoorCloseManual>
      <paintable>true</paintable>
    </building>
    <researchPrerequisites>
      <li>Autodoors</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>