<?xml version="1.0" encoding="UTF-8"?>
<Patch>
<Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/BiomeDef[defName="ExtremeDesert"]</xpath>
    <value>
        <li Class="DynamicEconomy.LocalPriceModifierDefExtension">
            <categoryPriceMultipilers>
                <PlantFoodRaw>1.7</PlantFoodRaw>
                <MeatRaw>1.5</MeatRaw>
                <Animals>1.3</Animals>
            </categoryPriceMultipilers>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/BiomeDef[defName="AridShrubland"]</xpath>
    <value>
        <li Class="DynamicEconomy.LocalPriceModifierDefExtension">
            <categoryPriceMultipilers>
                <PlantFoodRaw>1.4</PlantFoodRaw>
                <MeatRaw>1.2</MeatRaw>
            </categoryPriceMultipilers>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/BiomeDef[defName="TropicalRainforest" or defName="TropicalSwamp"]</xpath>
    <value>
        <li Class="DynamicEconomy.LocalPriceModifierDefExtension">
            <categoryPriceMultipilers>
                <Medicine>1.2</Medicine>
            </categoryPriceMultipilers>
            <thingPriceMultipilers>
                <Penoxycyline>1.8</Penoxycyline>
                <WoodLog>0.7</WoodLog>
            </thingPriceMultipilers>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/BiomeDef[defName="TemperateForest" or defName="BorealForest"]</xpath>
    <value>
        <li Class="DynamicEconomy.LocalPriceModifierDefExtension">
            <categoryPriceMultipilers>
                <PlantFoodRaw>0.85</PlantFoodRaw>
                <MeatRaw>0.9</MeatRaw>
                <Animals>0.9</Animals>
            </categoryPriceMultipilers>
            <thingPriceMultipilers>
                <WoodLog>0.65</WoodLog>
            </thingPriceMultipilers>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/BiomeDef[defName="IceSheet" or defName="SeaIce"]</xpath>
    <value>
        <li Class="DynamicEconomy.LocalPriceModifierDefExtension">
            <categoryPriceMultipilers>
                <PlantFoodRaw>2.2</PlantFoodRaw>
                <MeatRaw>2</MeatRaw>
                
            </categoryPriceMultipilers>
            <thingPriceMultipilers>
                <WoodLog>2</WoodLog>
            </thingPriceMultipilers>
        </li>
    </value>
</Operation>

</Patch>