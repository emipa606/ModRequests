	  <ComponentIndustrial>2</ComponentIndustrial>
      <Plasteel>40</Plasteel>
	  <Gold>1</Gold>
	  <Silver>2</Silver>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Armor/ShenrigineHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>EVA</li>
        <li>ShenrigineArmor</li>
      </tags>
    </apparel>
  </ThingDef>



</Defs>