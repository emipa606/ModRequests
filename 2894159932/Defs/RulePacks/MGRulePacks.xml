<?xml version="1.0" encoding="utf-8"?>
<Defs>
<RulePackDef>
    <defName>MG_NamerSettlement</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[settlementname] [settlementadj]</li>
        <li>settlementadj->盟</li>
        <li>settlementadj->旗</li>
      </rulesStrings>
      <rulesFiles>
        <li>settlementname->Names/MGSettleName</li>

      </rulesFiles>


    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>MG_NamerUtility</defName>
    <rulePack>
        <rulesFiles>
            <li>MG_Ming->Names/MG_Ming</li>
            <li>MG_Xing->Names/MG_Xing</li>
        </rulesFiles>
    </rulePack>
</RulePackDef>

  <RulePackDef>
    <defName>MG_Faction</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name(p=1)->[thissname]蒙兀族</li>
      </rulesStrings>
      <rulesFiles>
        <li>thissname->Names/MGFactionName</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>


  <RulePackDef>
    <defName>NamerPersonMG</defName>
    <include>
      <li>MG_NamerUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_name->[MG_Xing] [MG_Ming]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>MG_Namerideo</defName>
      <include>
      <li>GlobalUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_ideoName->[IdeoAdj] [IdeoNAM] [IdeoBin]</li>

        <li>r_ideoAdjective->长生天崇拜</li>
        <li>r_memberName->长生天信徒</li>


        <li>IdeoAdj->新</li>
        <li>IdeoAdj->黄金</li>
        <li>IdeoAdj->游牧</li>
        <li>IdeoAdj->边缘</li>
        <li>hyphenPrefix->蒙兀</li>

        <li>IdeoNAM->长生天</li>
        <li>IdeoNAM->腾格里</li>

        <li>IdeoBin->信仰</li>
        <li>IdeoBin->崇拜</li>

      </rulesStrings>
    </rulePack>
  </RulePackDef>



  <RulePackDef><!--神明名称-->
    <defName>MG_DeityType</defName>
    <include>
      <li>GlobalUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_deityType->图腾</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>MG_NamerDeity</defName>

    <rulePack>
      <rulesStrings>
        <li>r_deityName->[MG_ShenMing]</li>
      </rulesStrings>
      <rulesFiles>
        <li>MG_ShenMing->Names/MG_ShenMing</li>
      </rulesFiles>
    </rulePack>

  </RulePackDef>  



  <RulePackDef>
    <defName>MG_NamerFestival</defName>
    <rulePack>
      <rulesStrings>
        <li>festivalName->蒙兀[festival]节</li>

      </rulesStrings>
      <rulesFiles>
        <li>festival->Names/MG_Festival</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>


  <RulePackDef>
    <defName>MG_LeaderTitleMaker</defName>

    <rulePack>
      <rulesStrings>
        <li>memeLeaderNoun(priority=1)->[cultureLeaderNoun]</li> 
        <li>r_leaderTitle->蒙兀[cultureLeaderNoun]</li>



        <li>cultureLeaderNoun->可汗</li>
        <li>cultureLeaderNoun->大汗</li>

      </rulesStrings>

    </rulePack>

  </RulePackDef>


  <RulePackDef>
    <defName>MG_PlayerNamerSettlement</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[settlementname] [settlementadj]</li>
        <li>settlementadj->盟</li>
        <li>settlementadj->旗</li>
      </rulesStrings>
      <rulesFiles>
        <li>settlementname->Names/MGSettleName</li>

      </rulesFiles>


    </rulePack>
  </RulePackDef>
</Defs>  