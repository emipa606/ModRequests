<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef Name="MG_ApparelBase" ParentName="ApparelBase" Abstract="True">
        <techLevel>Medieval</techLevel>
      <generateCommonality>1</generateCommonality>
      
      <thingCategories>
          <li>Apparel</li>
      </thingCategories>
    
      <recipeMaker>
        <researchPrerequisite>MG_Medpack</researchPrerequisite>		
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <effectWorking>Tailor</effectWorking>
        <soundWorking>Recipe_Tailor</soundWorking>
        <recipeUsers Inherit="False">
          <li>ElectricTailoringBench</li>
          <li>HandTailoringBench</li>
        </recipeUsers>
        <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
        <defaultIngredientFilter>
          <categories>
            <li>Root</li>
          </categories>
          <disallowedThingDefs>
            <li>Gold</li>
            <li>Silver</li>
            <li>Plasteel</li>
            <li>Jade</li>
            <li>Uranium</li>
          </disallowedThingDefs>
        </defaultIngredientFilter>
      </recipeMaker>
    </ThingDef>
    
    <!-- ====================================== 盔甲基础 =========================================== -->  

      <ThingDef Name="MG_ArmorBase" ParentName="ApparelBase" Abstract="True">
      <smeltable>true</smeltable>
      <recipeMaker>
        <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
        <researchPrerequisite>MG_Medpack</researchPrerequisite>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <effectWorking>Smith</effectWorking>
        <soundWorking>Recipe_Smith</soundWorking>
        <recipeUsers Inherit="False">
          <li MayRequire="SZ.TW.New.GuoHun">TW_ArmorTable</li>
          <li>ElectricSmithy</li>
          <li>FueledSmithy</li>
        </recipeUsers>
        <defaultIngredientFilter>
          <categories>
            <li>Root</li>
          </categories>
          <disallowedThingDefs>
            <li>Gold</li>
            <li>Silver</li>
            <li>Plasteel</li>
            <li>Jade</li>
            <li>Uranium</li>
          </disallowedThingDefs>
        </defaultIngredientFilter>
      </recipeMaker>
      <tradeTags>
        <li>Armor</li>
      </tradeTags>
      <techLevel>Medieval</techLevel>
      <generateCommonality>1</generateCommonality>
      <thingCategories>
          <li>MG_Cat_Armor</li>
      </thingCategories>
      
      <apparel>
       <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      </apparel>
      
    </ThingDef>
    
    <!-- ====================================== 头盔基础 =========================================== -->  
    
