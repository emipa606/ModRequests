<?xml version="1.0" encoding="utf-8" ?>
<Defs>
   <ThingDef ParentName="BuildingBase">
    <defName>Insect_Hotel</defName>
    <label>insect hotel</label>
    <description>A simple construction perfectly designed for insect nests, allowing the conversion of raw food into insect meat. Should be built outdoors.</description>
		<altitudeLayer>Building</altitudeLayer>
		<blockWind>false</blockWind>
		<building>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
      <destroySound>BuildingDestroyed_Wood_Small</destroySound>
    </building>
		<castEdgeShadows>true</castEdgeShadows>
    <constructEffect>ConstructWood</constructEffect>
    <costList>
      <WoodLog>30</WoodLog>
    </costList>
    <designationCategory>Production</designationCategory>
    <fillPercent>.4</fillPercent> 
		<graphicData>
      <texPath>Buildings/Insect_Hotel/InsectHotel</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
      </damageData>
			<drawOffset>(0,0,0.3)</drawOffset>
			<drawSize>(1.2,1.2)</drawSize>
			<shaderType>CutoutComplex</shaderType>
    </graphicData>		
		<hasInteractionCell>True</hasInteractionCell>		
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <minifiedDef>MinifiedThing</minifiedDef>
    <passability>PassThroughOnly</passability>
    <pathCost>35</pathCost>
		<placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>		
		<recipes></recipes>
    <rotatable>true</rotatable>
		<surfaceType>None</surfaceType>
    <statBases>
			<Beauty>-5</Beauty>
			<Cleanliness>-15</Cleanliness>
      <WorkToBuild>600</WorkToBuild>
      <Mass>10</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <thingClass>Building</thingClass>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<tickerType>Rare</tickerType>
    <comps>
			<li Class="UniversalFermenter.CompProperties_UniversalFermenter">
				<barOffset>(0, -.38)</barOffset>
				<showProductIcon>false</showProductIcon>
				<processes>
					<li>
						<thingDef>Meat_Megaspider</thingDef>
						<customLabel>Use plant food</customLabel>
						<efficiency>.8</efficiency>
						<ingredientFilter>
							<categories>
								<li>PlantFoodRaw</li>
							</categories>
						</ingredientFilter>
						<maxCapacity>25</maxCapacity>
						<processDays>3</processDays>
						<ruinedPerDegreePerHour>0</ruinedPerDegreePerHour>
						<speedBelowSafe>0</speedBelowSafe>
						<speedAboveSafe>0</speedAboveSafe>
						<temperatureSafe>0~45</temperatureSafe>
						<temperatureIdeal>10~36</temperatureIdeal>
						<usesTemperature>true</usesTemperature>
					</li>
					<li>
						<thingDef>Meat_Megaspider</thingDef>
						<customLabel>Use meat</customLabel>
						<efficiency>.8</efficiency>
						<ingredientFilter>
							<categories>
								<li>MeatRaw</li>
							</categories>
							<disallowedThingDefs>
								<li>Meat_Megaspider</li>
							</disallowedThingDefs>
						</ingredientFilter>
						<maxCapacity>25</maxCapacity>
						<processDays>3</processDays>
						<ruinedPerDegreePerHour>0</ruinedPerDegreePerHour>
						<speedBelowSafe>0</speedBelowSafe>
						<speedAboveSafe>0</speedAboveSafe>
						<temperatureSafe>0~45</temperatureSafe>
						<temperatureIdeal>10~36</temperatureIdeal>
						<usesTemperature>true</usesTemperature>
					</li>
				</processes>
			</li>
			<li Class="CompProperties_Forbiddable"/>
    </comps>
  </ThingDef>

