<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef Name="Insect_CookGourmetMealBase" Abstract="True">
    <fixedIngredientFilter>
      <thingDefs>
        <li>Meat_Megaspider</li>
      </thingDefs>
      <categories>
        <li>PlantFoodRaw</li>
		<li>VCE_Condiments</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
        <li>PlantFoodRaw</li>
		<li>VCE_Condiments</li>
      </categories>
      <disallowedCategories>
        <li>EggsFertilized</li>
      </disallowedCategories>
      <disallowedThingDefs>
        <li>Meat_Human</li>
        <li>InsectJelly</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>

  <RecipeDef ParentName="Insect_CookGourmetMealBase">
    <defName>Insect_CookMealGourmet</defName>
    <label>cook gourmet insect meal</label>
    <description>Cook a culinary work of art, characterized by refined, even elaborate preparation and presentation of an aesthetically balanced, albeit low quantity insect meal.</description>
    <jobString>Cooking gourmet meal.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Meat_Megaspider</li>
         </thingDefs>
        </filter>
        <count>0.5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
	  <li>
        <filter>
          <categories>
            <li>VCE_Condiments</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Insect_MealGourmet>1</Insect_MealGourmet>
    </products>
    <skillRequirements>
      <Cooking>10</Cooking>
    </skillRequirements>
  </RecipeDef>
</Defs>
