<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Item Categories Stuff -->
  <!--Adds in the new drug crops to the biomes.  As per the core patch, .0000000's represent plants growable in that biome, but not *actually* found in the wild.-->
  <!-- not being able to cultivate all the drug plants in all the biomes is fucking stupid. This is why I changed that -Windows XP -->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants</xpath>
        <value>
          <RC2_PlantShrooms>0.015</RC2_PlantShrooms>
          <RC2_PlantDreamflower>0.0000000000000001</RC2_PlantDreamflower>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/BiomeDef[defName = "TemperateSwamp"]/wildPlants</xpath>
        <value>
          <RC2_PlantShrooms>0.015</RC2_PlantShrooms>
          <RC2_PlantDreamflower>0.0000000000000001</RC2_PlantDreamflower>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/BiomeDef[defName = "TropicalRainforest"]/wildPlants</xpath>
        <value>
          <RC2_PlantShrooms>0.015</RC2_PlantShrooms>
          <RC2_PlantDreamflower>0.0000000000000001</RC2_PlantDreamflower>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/BiomeDef[defName = "TropicalSwamp"]/wildPlants</xpath>
        <value>
          <RC2_PlantShrooms>0.015</RC2_PlantShrooms>
          <RC2_PlantDreamflower>0.0000000000000001</RC2_PlantDreamflower>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/BiomeDef[defName = "AridShrubland"]/wildPlants</xpath>
        <value>
          <RC2_PlantDreamflower>0.0000000000000001</RC2_PlantDreamflower>
          <RC2_PlantShrooms>0.0000000000000001</RC2_PlantShrooms>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/BiomeDef[defName = "Desert"]/wildPlants</xpath>
        <value>
          <RC2_PlantDreamflower>0.0000000000000001</RC2_PlantDreamflower>
          <RC2_PlantShrooms>0.0000000000000001</RC2_PlantShrooms>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/BiomeDef[defName = "ExtremeDesert"]/wildPlants</xpath>
        <value>
          <RC2_PlantDreamflower>0.0000000000000001</RC2_PlantDreamflower>
          <RC2_PlantShrooms>0.0000000000000001</RC2_PlantShrooms>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>