<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef Name="RC2_DrugProcessingBase" Abstract="True">
    <defName>RC2_DrugProcessingBase</defName>
    <label>make drugs</label>
    <description>Make some drugs.</description>
    <jobString>Making drugs.</jobString>
    <workAmount>200</workAmount>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workSkill>Intellectual</workSkill>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
  </RecipeDef>

  <!--I got rid of the soldier pill because 1. it depends too heavily on ingredients added by rimcuisine base and 2. there are already alternatives in vanilla expanded brewing, which this mod is intended to be run alongside -->
</Defs>