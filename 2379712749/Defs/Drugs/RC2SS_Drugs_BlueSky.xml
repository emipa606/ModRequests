<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>RC2_BlueSky</defName>
    <label>blue sky</label>
    <description>Closely related to Wake-up, Blue sky is a synthetic stimulant that promotes both energy and wakefulness in users.  However, its a highly addictive drug that also causes extreme aggressiveness, not to mention many health problems for long-term users.  It is, however, cheaper to produce than Wake-up.</description>
    <graphicData>
      <texPath>RC2_Things/RC2_Drugs/BlueSky</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>450</WorkToMake>
      <MarketValue>22</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <joyKind>Chemical</joyKind>
      <joy>0.30</joy>
      <drugCategory>Hard</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RC2_BlueSkyHigh</hediffDef>
          <severity>0.75</severity>
          <toleranceChemical>WakeUp</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>0.75</offset>
          <toleranceChemical>WakeUp</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>WakeUpTolerance</hediffDef>
          <severity>0.055</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>WakeUpProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>1</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>WakeUp</chemical>
        <addictiveness>0.20</addictiveness>
        <minToleranceToAddict>0.03</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.30</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>210</listOrder>
        <overdoseSeverityOffset>
          <min>0.18</min>
          <max>0.35</max>
        </overdoseSeverityOffset>
        <largeOverdoseChance>0.02</largeOverdoseChance>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>RC2_BlueSkyHigh</defName>
    <description>Blue Sky reduces rest factor by a little, increases conciousness and moving slightly, but greatly increases aggressiveness.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <label>high on blue sky</label>
    <labelNoun>a blue sky high</labelNoun>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.5</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <restFallFactor>0.9</restFallFactor>
        <socialFightChanceFactor>3.0</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>0.25</WorkSpeedGlobal>
        </statOffsets>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>HeartAttack</hediff>
            <mtbDays>80</mtbDays>
            <partsToAffect>
              <li>Heart</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>ChemicalDamageModerate</hediff>
            <mtbDays>180</mtbDays>
            <partsToAffect>
              <li>Heart</li>
            </partsToAffect>
          </li>
        </hediffGivers>
        <mentalStateGivers>
          <li>
            <mentalState>Slaughterer</mentalState>
            <mtbDays>60</mtbDays>
          </li>
          <li>
            <mentalState>MurderousRage</mentalState>
            <mtbDays>75</mtbDays>
          </li>
          <li>
            <mentalState>Tantrum</mentalState>
            <mtbDays>30</mtbDays>
          </li>
          <li>
            <mentalState>BedroomTantrum</mentalState>
            <mtbDays>15</mtbDays>
          </li>
          <li>
            <mentalState>SadisticRage</mentalState>
            <mtbDays>45</mtbDays>
          </li>
          <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>120</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>
</Defs>