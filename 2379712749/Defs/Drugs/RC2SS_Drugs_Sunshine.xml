<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>RC2_Sunshine</defName>
    <label>sunshine</label>
    <description>Sunshine is a potent hallucinogenic drug made from refined and condensed shrooms and neutroamine. Relatively non-addictive, it is a potent mood booster, but makes the user useless when performing tasks.  While not very addictive, long-term users have been noted to suffer from a drug-induced form of dementia, so use sparingly.</description>
    <socialPropernessMatters>true</socialPropernessMatters>
    <tickerType>Rare</tickerType>
    <graphicData>
      <texPath>RC2_Things/RC2_Drugs/Sunshine</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>32</MarketValue>
      <Mass>0.005</Mass>
      <DeteriorationRate>4</DeteriorationRate>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <baseIngestTicks>100</baseIngestTicks>
      <chairSearchRadius>1</chairSearchRadius>
      <preferability>NeverForNutrition</preferability>
      <tasteThought>
      </tasteThought>
      <foodType>Processed</foodType>
      <joy>1</joy>
      <joyKind>Chemical</joyKind>
      <nurseable>true</nurseable>
      <drugCategory>Hard</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RC2_SunshineHigh</hediffDef>
          <severity>0.75</severity>
          <toleranceChemical>RC2_Sunshine</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RC2_SunshineTolerance</hediffDef>
          <severity>0.03</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>DrugProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>1</Neutroamine>
      <RC2_Shrooms>4</RC2_Shrooms>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>RC2_Sunshine</chemical>
        <addictiveness>0.05</addictiveness>
        <minToleranceToAddict>.25</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.2</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>30</listOrder>
        <overdoseSeverityOffset>
          <min>0.08</min>
          <max>0.14</max>
        </overdoseSeverityOffset>
        <largeOverdoseChance>0.01</largeOverdoseChance>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <description>Sunshine reduces senses and mental competence, but ensures a strong euphoria when in their system.</description>
    <defName>RC2_SunshineHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>walking on sunshine</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>2.4</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2.4</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <vomitMtbDays>5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.8</postFactor>
          </li>
          <li>
            <capacity>Sight</capacity>
            <postFactor>0.5</postFactor>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>0.5</postFactor>
          </li>
          <li>
            <capacity>Moving</capacity>
            <postFactor>0.5</postFactor>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>5</mtbDays>
          </li>
          <li>
            <mentalState>Wander_OwnRoom</mentalState>
            <mtbDays>30</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Sad</mentalState>
            <mtbDays>60</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>90</mtbDays>
          </li>
        </mentalStateGivers>
        <hediffGivers>
          <li Class="HediffGiver_RandomDrugEffect">
            <hediff>Dementia</hediff>
            <baseMtbDays>180</baseMtbDays>
            <minSeverity>0.6</minSeverity>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
            <countToAffect>1</countToAffect>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>RC2_SunshineHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RC2_SunshineHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>walking on sunshine</label>
        <description>Duuuuudee... I'm trippin'.. hehehehehehehehehehehe...</description>
        <baseMoodEffect>50</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <!-- Sunshine addiction -->
  <ChemicalDef>
    <defName>RC2_Sunshine</defName>
    <label>sunshine</label>
    <addictionHediff>RC2_SunshineAddiction</addictionHediff>
    <toleranceHediff>RC2_SunshineTolerance</toleranceHediff>
    <onGeneratedAddictedToleranceChance>0.8</onGeneratedAddictedToleranceChance>
  </ChemicalDef>
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>RC2_Chemical_Sunshine</defName>
    <needClass>Need_Chemical</needClass>
    <label>sunshine</label>
    <description>Because of a sunshine addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>25</listPriority>
  </NeedDef>
  <HediffDef>
    <description>Sunshine has built up in their system, causing the pawn to have issues separating the euphoria and reality. Mental breaks can happen and can be very dangerous.</description>
    <defName>RC2_SunshineTolerance</defName>
    <label>sunshinetolerance</label>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(179,86,132)</defaultLabelColor>
    <maxSeverity>1.0</maxSeverity>
    <scenarioCanAdd>true</scenarioCanAdd>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.015</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>RC2_Sunshine</chemical>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <becomeVisible>false</becomeVisible>
        <label>small</label>
      </li>
      <li>
        <minSeverity>0.20</minSeverity>
        <label>small</label>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_OwnRoom</mentalState>
            <mtbDays>30</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Sad</mentalState>
            <mtbDays>60</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>90</mtbDays>
          </li>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>15</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <minSeverity>0.50</minSeverity>
        <label>large</label>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_OwnRoom</mentalState>
            <mtbDays>15</mtbDays>
          </li>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>7.5</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Sad</mentalState>
            <mtbDays>30</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>45</mtbDays>
          </li>
          <li>
            <mentalState>CorpseObsession</mentalState>
            <mtbDays>60</mtbDays>
          </li>
          <li>
            <mentalState>BedroomTantrum</mentalState>
            <mtbDays>75</mtbDays>
          </li>
          <li>
            <mentalState>SadisticRage</mentalState>
            <mtbDays>90</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <minSeverity>0.80</minSeverity>
        <label>massive</label>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_OwnRoom</mentalState>
            <mtbDays>7.5</mtbDays>
          </li>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>3</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Sad</mentalState>
            <mtbDays>15</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>22.5</mtbDays>
          </li>
          <li>
            <mentalState>CorpseObsession</mentalState>
            <mtbDays>30</mtbDays>
          </li>
          <li>
            <mentalState>BedroomTantrum</mentalState>
            <mtbDays>37.5</mtbDays>
          </li>
          <li>
            <mentalState>SadisticRage</mentalState>
            <mtbDays>45</mtbDays>
          </li>
          <li>
            <mentalState>Binging_DrugExtreme</mentalState>
            <mtbDays>52.5</mtbDays>
          </li>
          <li>
            <mentalState>FireStartingSpree</mentalState>
            <mtbDays>60</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
    <hediffGivers>
      <li Class="HediffGiver_RandomDrugEffect">
        <hediff>Dementia</hediff>
        <baseMtbDays>90</baseMtbDays>
        <minSeverity>0.6</minSeverity>
        <partsToAffect>
          <li>Brain</li>
        </partsToAffect>
        <countToAffect>1</countToAffect>
      </li>
    </hediffGivers>
  </HediffDef>
  <HediffDef ParentName="AddictionBase">
    <defName>RC2_SunshineAddiction</defName>
    <description>Sunshine has built up in the pawn's system and has become reliant on its euphoria. Withdrawal will cause the pawn to wander confused commonly.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>sunshine addiction</label>
    <causesNeed>RC2_Chemical_Sunshine</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-.03333</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>.5</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>RC2_SunshineWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RC2_SunshineAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>sunshine withdrawal</label>
        <description>Dude-man, I need a hit.. this reality is booooring!</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>