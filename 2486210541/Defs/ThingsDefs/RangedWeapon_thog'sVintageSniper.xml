<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_VintageSniperRifle</defName>
    <label>vintage sniper rifle</label>
    <description>A very ancient design of precision sniper rifle. Bolt action. It has long range, good accuracy and good power. Because it's so unwieldy, other weapons outclass it at close range.</description>
    <graphicData>
      <texPath>Weapon/VintageSniperRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.84</AccuracyMedium>
      <AccuracyLong>0.82</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
	  <WoodLog>20</WoodLog>
      <Steel>80</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SniperRifleVintage</defaultProjectile>
        <warmupTime>3.5</warmupTime>
        <range>42.9</range>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags Inherit="False">
      <li>SniperRifle</li>
    </weaponTags>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SniperRifleVintage</defName>
    <label>vintage sniper rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>22</damageAmountBase>
      <stoppingPower>1.2</stoppingPower>
      <speed>110</speed>
    </projectile>
  </ThingDef>
 </Defs>