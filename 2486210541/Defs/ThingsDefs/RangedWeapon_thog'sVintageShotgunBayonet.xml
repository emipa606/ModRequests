<?xml version="1.0" encoding="utf-8"?>
<Defs>
   <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_VintageShotgunBayonet</defName>
    <label>vintage shotgun with bayonet</label>
    <description>An very ancient design of shotgun. The slightly simpler mechanical mechanism allows for faster firing, but the lack of a choke makes range short. This one has been sawn down and mounted with a bayonet, allowing for greater usage as a melee weapon in close quarters combat, but reducing its performance at a range even further.</description>
    <graphicData>
      <texPath>Weapon/VintageShotgunBayonet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <WorkToMake>16200</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.88</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
	  <WoodLog>5</WoodLog>
      <Steel>85</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_VintageShotgun</defaultProjectile>
        <warmupTime>1.1</warmupTime>
        <range>11.9</range>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>bayonet</label>
        <capacities>
          <li>Stab</li>
          <li>Cut</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
 </Defs>