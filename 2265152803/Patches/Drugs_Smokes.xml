<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<!--Rebalance Smokes RecipeDef - showHoursToRecover = true, severityPerDay -1-->
			<!--Henbane Joint -->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="AYHenbaneHigh"]/comps/li[@Class="HediffCompProperties_SeverityPerDay"]</xpath>
				<value>
					<li Class="HediffCompProperties_SeverityPerDay">
						<severityPerDay>-1.0</severityPerDay>
						<showHoursToRecover>true</showHoursToRecover>
					</li>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
