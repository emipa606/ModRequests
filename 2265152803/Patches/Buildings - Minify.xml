<?xml version="1.0" encoding="utf-8"?>
<Patch>
<!--Minify Buildings Defs - -->

	<!--AYBrazier-->

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "AYBrazier"]/minifiedDef</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "AYBrazier"]</xpath>
				<value>
					<minifiedDef>MinifiedThing</minifiedDef>
				</value>
			</li>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "AYBrazier"]/thingCategories</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "AYBrazier"]</xpath>
				<value>
					<thingCategories>
						<li>BuildingsTemperature</li>
					</thingCategories>
				</value>
			</li>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "AYBrazier"]/statBases/Mass</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "AYBrazier"]/statBases</xpath>
				<value>
					<Mass>15</Mass>
				</value>
			</li>
		</operations>
	</Operation>
	
