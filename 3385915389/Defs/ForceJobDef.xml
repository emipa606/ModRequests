<?xml version="1.0" encoding="utf-8"?>
<Defs>




	<JobDef>
		<defName>Play_StrippingTable</defName>
		<driverClass>ForceJobMod.JobDriver_PlayStrippingTable</driverClass>
		<reportString>playing StrippingTable.</reportString>
		<joyDuration>4000</joyDuration>
		<joyMaxParticipants>1</joyMaxParticipants>
		<joySkill>Intellectual</joySkill>
		<joyXpPerTick>0.004</joyXpPerTick>
		<joyKind>Gaming_Dexterity</joyKind>
		<taleOnCompletion>StrippedAtExoticDancePole</taleOnCompletion>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>


	<JoyGiverDef>
		<defName>Play_StrippingTable</defName>
		<giverClass>ForceJobMod.JoyGiver_PlayStrippingTable</giverClass>
		<baseChance>4</baseChance>
		<thingDefs>
			<li>StrippingTableTable</li>
		</thingDefs>
		<jobDef>Play_StrippingTable</jobDef>
		<joyKind>Gaming_Dexterity</joyKind>
		<requiredCapacities>
			<li>Sight</li>
			<li>Manipulation</li>
		</requiredCapacities>
	</JoyGiverDef>



	<RoomRoleDef>
		<defName>StripClub</defName>
		<label>strip club</label>
		<workerClass>ForceJobMod.RoomRoleWorker_StripClub</workerClass>
		<relatedStats>
			<li>Beauty</li>
			<li>Cleanliness</li>
			<li>Wealth</li>
			<li>Space</li>
			<li>Impressiveness</li>
		</relatedStats>
	</RoomRoleDef>




	<TaleDef>
		<defName>StrippedAtExoticDancePole</defName>
		<label>stripped at an exotic dance pole</label>
		<taleClass>Tale_SinglePawnAndDef</taleClass>
		<type>Volatile</type>
		<baseInterest>1</baseInterest>
		<rulePack>
			<rulesStrings>
				<li>tale_noun->[PAWN_nameDef] discovering capitalism</li>
				<li>image->[PAWN_nameFull] gripping a [PoleMaterial] pole with [PAWN_possessive] thighs, dead inside</li>
				<li>image->[PAWN_nameFull] swaying mechanically, [PAWN_pronoun] wondering where it all went wrong</li>
				<li>image->[PAWN_nameFull] staring into the camera, [PAWN_pronoun] screaming internally</li>
				<li>image->[PAWN_nameFull] spinning like [PAWN_possessive] dignity is on the auction block</li>
				<li>circumstance_phrase->while [PAWN_pronoun] avoids eye contact</li>
				<li>circumstance_phrase->with a forced smile that says 'rent's due'</li>
				<li>circumstance_phrase->oozing charisma and questionable life choices</li>
				<li>circumstance_phrase->bathed in neon regret</li>
				<li>circumstance_phrase->like a dumpster fire in high heels</li>
				<li>desc_sentence->[Quantity_adjphrase] [PersonJob]s awkwardly toss crumpled silver at [PAWN_objective].</li>
				<li>desc_sentence>[PAWN_pronoun] is surrounded by [Quantity_adjphrase] broke colonists shouting 'take it off.'</li>
				<li>desc_sentence>[Quantity_adjphrase] [Animal]s inexplicably start dancing too. It's weird.</li>
				<li>desc_sentence>[Quantity_adjphrase] [Enemy]s laugh so hard they forget to attack.</li>
			</rulesStrings>
		</rulePack>
	</TaleDef>


	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>StrippingTableTable</defName>
		<label>exotic dance pole</label>
		<thingClass>ForceJobMod.Building_StrippingTableTable</thingClass>
		<description>A pole where colonists can strip off their apparel for recreation. When linked to a colony cam, their performances have a chance to earn silver tips from remote viewers.</description>
		<graphicData>
			<texPath>Things/Building/Joy/StrippingTableTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<rotatable>false</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<hasInteractionCell>true</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<socialPropernessMatters>true</socialPropernessMatters>
		<fillPercent>0.40</fillPercent>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<building>
			<joyKind>Gaming_Dexterity</joyKind>
			<buildingSizeCategory>Medium</buildingSizeCategory>
			<paintable>true</paintable>
		</building>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>1200</WorkToBuild>
			<Mass>60</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>2</Beauty>
			<JoyGainFactor>1.3</JoyGainFactor>
		</statBases>
		<size>(1,2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<costList>
			<Steel>20</Steel>
		</costList>
		<pathCost>42</pathCost>
		<passability>PassThroughOnly</passability>
		<coversFloor>true</coversFloor>
		<designationCategory>Joy</designationCategory>
		<designationHotKey>Misc3</designationHotKey>
		<castEdgeShadows>false</castEdgeShadows>
		<canOverlapZones>false</canOverlapZones>
		<placeWorkers>
			<li>ForceJobMod.PlaceWorker_RequiresRoof</li>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_NeverAdjacentUnstandable</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ColonyCam</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>7</glowRadius>
				<glowColor>(255,20,147)</glowColor>
				<colorPickerEnabled>true</colorPickerEnabled>
				<darklightToggle>true</darklightToggle>
			</li>
		</comps>
		<tickerType>Rare</tickerType>
	</ThingDef>













	<ThingDef ParentName="BuildingBase">
		<defName>ColonyCam</defName>
		<label>colony cam</label>
		<description>A camera for streaming colonist "recreational" activities to the wider Rim on OnlyPawns.com. Placing it near an exotic dance pole increases the likelihood of generating "tips" from your viewers.</description>
		<graphicData>
			<texPath>Things/Building/Misc/ColonyCam</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.7,0.7)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<coversFloor>true</coversFloor>
		<rotatable>false</rotatable>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0.5</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<pathCost>42</pathCost>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1800</WorkToBuild>
			<Mass>20</Mass>
			<Flammability>0.5</Flammability>
		</statBases>
		<size>(1,1)</size>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<building>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
		</building>
		<designationCategory>Misc</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Facility">
				<maxSimultaneous>1</maxSimultaneous>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
		</comps>
		<designationHotKey>Misc6</designationHotKey>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>ForceJobMod.PlaceWorker_RequiresRoof</li>
			<li>ForceJobMod.PlaceWorker_CameraNearStrippingTable</li>
			<li>PlaceWorker_NeverAdjacentUnstandable</li>
		</placeWorkers>
	</ThingDef>



	
	
	
	
	



</Defs>
