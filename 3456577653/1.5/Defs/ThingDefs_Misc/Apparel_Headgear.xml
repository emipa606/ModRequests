<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Ai_TrashCanHelmet</defName>
    <label>trash can helmet</label>
    <description>A trash can helmet which gives slightly protection against sharp attacks. Not effective against blunt weapons.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TrashCanHelmet/TrashCanHelmet_Icon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>4100</WorkToMake>
      <MaxHitPoints>140</MaxHitPoints>
      <Mass>3</Mass>
      <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.14</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.4</EquipDelay>
    </statBases>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TrashCanHelmet/TrashCanHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>TrashCanHelmet</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>Ai_WasteOfResearch</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <displayPriority>140</displayPriority>
    </recipeMaker>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>70</costStuffCount>
    <techLevel>Industrial</techLevel>
    <tradeTags>
      <li>Clothing</li>
      <li>Armor</li>
    </tradeTags>
  </ThingDef>

</Defs>