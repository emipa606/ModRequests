<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<ThingDef ParentName="DankPyon_RuinedBuildingBase">
		<defName>Seti_WebbedRuinedBonePile1x2c</defName>
		<label>webbed large remains</label>
		<description>The remains of a spider's meal.</description>
				<thingClass>MedievalOverhaul.Building_Lootable</thingClass>
				<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Ruins/WebbedBonePileWide</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>(2,1)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
				<fillPercent>0.2</fillPercent>
		<pathCost>42</pathCost>
		<defaultPlacingRot>South</defaultPlacingRot>
		<costList>
			<DankPyon_Bone>20</DankPyon_Bone>
		</costList>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Mass>10</Mass>
			<WorkToBuild>200</WorkToBuild>
			<Flammability>0.2</Flammability>
		</statBases>
		<size>(2,1)</size>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<castEdgeShadows>false</castEdgeShadows>
		<surfaceType>Item</surfaceType>
		<modExtensions>
			<li Class="MedievalOverhaul.BuildingLootableExtension">
				<enemysToSpawn>
					<li>Rat</li>
				</enemysToSpawn>
				<enemySpawnChance>0.15</enemySpawnChance>
				<hostileEnemy>true</hostileEnemy>
				<emptyGraphicData>
					<texPath>Buildings/Ruin/RuinBonePile1x1</texPath>
					<graphicClass>Graphic_Random</graphicClass>
					<drawSize>(1,1)</drawSize>
					<color>(199,181,129)</color>
				</emptyGraphicData>
				<searchSound>BuildingDestroyed_Wood_Medium</searchSound>
				<searchEffect>DustPuff</searchEffect>
				<effectSize>2.5</effectSize>
				<lootCount>2~25</lootCount>
				<lootChance>0.33</lootChance>
				<isRandom>true</isRandom>
				<randomItems>
					<li>Gold</li>
					<li>Gold</li>
					<li>Silver</li>
					<li>Silver</li>
					<li>Silver</li>
					<li>Silver</li>
					<li>Silver</li>
					<li>Silver</li>
					<li>Silver</li>
					<li>Silver</li>
					<li>Jade</li>
					<li>DankPyon_RoxHorn</li>
					<li>DankPyon_DaerAntler</li>
					<li>DankPyon_DireBoarTusk</li>
					<li>DankPyon_IronOre</li>
					<li>DankPyon_IronIngot</li>
					<li>DankPyon_GoldOre</li>
					<li>DankPyon_Linen</li>
					<li>DankPyon_Bone</li>
					<li>DankPyon_Bone</li>
				</randomItems>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="DankPyon_RuinedBuildingBase">
		<defName>Seti_WebbedRuinedBonePile2x2c</defName>
		<label>webbed massive remains</label>
		<description>The remains of a spider's meal.</description>
		<graphicData>
			<texPath>Ruins/WebbedRuinBonePile2x2</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<fillPercent>0.2</fillPercent>
		<pathCost>42</pathCost>
		<costList>
			<DankPyon_Bone>40</DankPyon_Bone>
		</costList>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<Mass>10</Mass>
			<WorkToBuild>200</WorkToBuild>
			<Flammability>0.2</Flammability>
		</statBases>
		<size>(2,2)</size>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<castEdgeShadows>false</castEdgeShadows>
		<surfaceType>Item</surfaceType>
	</ThingDef>

	<!-- Bodies -->
	<ThingDef ParentName="DankPyon_AncientDeadBodyBase">
		<defName>Seti_WebbedAncientFootman</defName>
		<label>webbed footman remains</label>
		<description>The remains of a soldier killed by spiders. Can be scavenged for resources.</description>
		<graphicData>
			<texPath>Ruins/WebbedFootmanRemains</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>(1,1.5)</drawSize>
		</graphicData>
	</ThingDef>

</Defs>