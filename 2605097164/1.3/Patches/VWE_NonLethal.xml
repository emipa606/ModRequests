<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Weapons Expanded - Non-Lethal</li>
    </mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_StunBaton"]/weaponTags</xpath>
				<value>
					<li>NonLethal_Melee</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="VWE_Gun_Taser"]/weaponTags</xpath>
				<value>
					<li>NonLethal_Taser</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="VWE_Gun_RubberBulletPistol"]/weaponTags</xpath>
				<value>
					<li>NonLethal_Rubber</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="VWE_Gun_DartGun"]/weaponTags</xpath>
				<value>
					<li>NonLethal_Ranged</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="VWE_Gun_TearGasLauncher"]/weaponTags</xpath>
				<value>
					<li>NonLethal_TearGas</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="VWE_TearGasGrenade"]/weaponTags</xpath>
				<value>
					<li>NonLethal_TearGas</li>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
</Patch>