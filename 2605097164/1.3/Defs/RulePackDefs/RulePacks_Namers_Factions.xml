<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
  <!-- Player initial namers - used initially -->
  <RulePackDef>
    <defName>NamerInitialSettlementTheFirm</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->Local Department</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
	
  <!-- The Firm - General -->
  <RulePackDef>
    <defName>NamerFactionTheFirm</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[NamePerson] [Incorporations]</li>
        <li>r_name->[NamePerson] [Industries] [Incorporations]</li>
        <li>r_name->[NamePerson] and Sons [Incorporations]</li>
        <li>r_name->[NamePerson] and [NamePerson] [Incorporations]</li>
        <li>r_name->[NamePerson], [NamePerson] and [NamePerson] [Incorporations]</li>
      </rulesStrings>
      <rulesFiles>
        <li>Incorporations->Words/Nouns/Incorporations</li>
        <li>Industries->Words/Nouns/Industries</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>NamerSettlementTheFirm</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[Departments] Department's [Division]</li>
      </rulesStrings>
      <rulesFiles>
        <li>Departments->Words/Nouns/Departments</li>
        <li>Division->Words/Nouns/Division</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>
 
</Defs>
