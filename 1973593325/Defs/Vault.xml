<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef Name="LWM.Large_Vault"  ParentName="LWM_DeepStorage" >
    <defName>LWM_DeepStorage_Large_Vault</defName>
    <label>Large Vault</label>
    <description>Vault for storing large quantity of silver.Probably earned by raiding other faction bases.\n2400 Silver Stacks</description>
    <graphicData>
      <texPath>Vault/big_vault</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(5,4)</drawSize>
    </graphicData>
    <uiIconPath>Vault/vault_UI</uiIconPath>
    <staticSunShadowHeight>1</staticSunShadowHeight>
    <size>(3,2)</size>
    <statBases>
      <MaxHitPoints>20000</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>0</Flammability>
      <Beauty>5</Beauty>
      <Mass>10</Mass>
    </statBases>
    <stuffCategories>
    <li>Metallic</li>
  </stuffCategories>
  <costStuffCount>5000</costStuffCount>
  <costList>
    <Plasteel>500</Plasteel>
    <ComponentIndustrial>30</ComponentIndustrial>
  </costList>
    <building>
      <ignoreStoredThingsBeauty>false</ignoreStoredThingsBeauty>
      <preventDeteriorationOnTop>false</preventDeteriorationOnTop>
      <fixedStorageSettings>
        <filter>
          <thingDefs>
            <li>Silver</li>
            <li>Gold</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
    <priority>Critical</priority>
      <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
      </filter>
    </defaultStorageSettings>
    </building>
    <comps>
      <li Class="LWM.DeepStorage.Properties" >
        <maxNumberStacks>400</maxNumberStacks>
        <minTimeStoringTakes>100</minTimeStoringTakes>
        <additionalTimeStackSize>10</additionalTimeStackSize>
        <overlayType>SumOfAllItems</overlayType>
      </li>
    </comps>
  </ThingDef>


