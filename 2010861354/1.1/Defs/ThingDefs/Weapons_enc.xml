<?xml version="1.0" encoding="utf-8" ?>
<Defs>


<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>DRKGun_Avenger</defName>
    <label>Avenger minigun</label>
    <description>Rockwell designed the Avenger as the replacement for their aging CZ53 Personal Minigun. The Avenger's design improvements include improved, gel-fin, cooling and chromium plated barrel-bores. This gives it a greater range and lethality.</description>
    <graphicData>
      <texPath>Things/enc_weapons/avenger</texPath>
      <graphicClass>Graphic_Single</graphicClass>
<drawSize>1.15</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>80000</WorkToMake>
      <Mass>14</Mass>
      <AccuracyTouch>0.15</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.1</AccuracyLong>
      <RangedWeapon_Cooldown>8</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>20</ComponentIndustrial>
	<Plasteel>80</Plasteel>
    </costList>
    <recipeMaker>
<researchPrerequisite>enc_dota</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>GunHeavy</li>
<li>EncWeapons</li>
    </weaponTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.15</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Minigun</defaultProjectile>
        <warmupTime>2.5</warmupTime>
        <range>24</range>
        <burstShotCount>16</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>avengershot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrels</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  
<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>DRKGun_Plasmasmg</defName>
