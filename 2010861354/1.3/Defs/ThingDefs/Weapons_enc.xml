<DamageDef Name="DRK_PlasmaCannonDamage">
    <defName>DRK_PlasmaCannonDamage</defName>
    <label>giant plasma bolt</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has been liquified in a plasma explosion.</deathMessage>
    <hediff>Burn</hediff>
    <hediffSolid>Scratch</hediffSolid>
    <harmAllLayersUntilOutside>false</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Heat</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>68</defaultDamage>
    <defaultStoppingPower>2</defaultStoppingPower>
    <defaultArmorPenetration>0.6</defaultArmorPenetration>
    <buildingDamageFactor>2</buildingDamageFactor>
    <plantDamageFactor>2</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>30</explosionHeatEnergyPerCell>
    <explosionCellFleck>BlastDry</explosionCellFleck>
        <soundExplosion>HeavyPlasmaBurst</soundExplosion>
    <combatLogRules>Damage_Bomb</combatLogRules>
  </DamageDef>

