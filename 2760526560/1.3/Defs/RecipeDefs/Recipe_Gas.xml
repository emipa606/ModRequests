<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <RecipeDef>
        <defName>HA_GasFromWood</defName>
        <label>produce gas from wood</label>
        <description>Produce gas bottles by heating wood logs.</description>
        <jobString>Producing Gas.</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <workAmount>2500</workAmount>
        <ingredients>
          <li>
            <filter>
              <thingDefs>
                <li>WoodLog</li>
              </thingDefs>
            </filter>
            <count>50</count>
          </li>
        </ingredients>
        <fixedIngredientFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fixedIngredientFilter>
        <products>
            <HA_GasBottle>60</HA_GasBottle>
            <HA_Tar>5</HA_Tar>
        </products>
        <workSkill>Crafting</workSkill>
        <recipeUsers>
            <li>HA_Gasifier</li>
        </recipeUsers>
    </RecipeDef>

