<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Alpha Animals</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="AA_Helixien"]/comps</xpath>
                    <value>
                        <li Class="AnimalBehaviours.CompProperties_AnimalProduct">
                            <resourceDef>HA_GasBottle</resourceDef>
                            <gatheringIntervalDays>3</gatheringIntervalDays>
                            <resourceAmount>20</resourceAmount>
                            <customResourceString>GasSlugDesc</customResourceString>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>