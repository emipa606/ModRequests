<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <RecipeDef>
        <defName>HA_GasFromCoal</defName>
        <label>produce gas from coal</label>
        <description>Produce gas bottles by heating coal.</description>
        <jobString>Producing Gas.</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <workAmount>2500</workAmount>
        <ingredients>
          <li>
            <filter>
              <thingDefs>
                <li>VMEu_Coal</li>
              </thingDefs>
            </filter>
            <count>25</count>
          </li>
        </ingredients>
        <fixedIngredientFilter>
          <thingDefs>
            <li>VMEu_Coal</li>
          </thingDefs>
        </fixedIngredientFilter>
        <products>
            <HA_GasBottle>50</HA_GasBottle>
            <HA_Tar>7</HA_Tar>
        </products>
        <workSkill>Crafting</workSkill>
        <recipeUsers>
            <li>HA_Gasifier</li>
        </recipeUsers>
    </RecipeDef>

