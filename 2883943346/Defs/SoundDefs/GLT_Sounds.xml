<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <SoundDef>
    <defName>DirectBeam_Shot</defName>
    <sustain>true</sustain>
    <context>MapOnly</context>
    <maxSimultaneous>2</maxSimultaneous>
    <priorityMode>PrioritizeNearest</priorityMode>
    <sustainStopSound>DirectBeam_End</sustainStopSound>
    <subSounds>
      <li>
        <tempoAffectedByGameSpeed>true</tempoAffectedByGameSpeed>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>DirectBeam_Shot/Fire</clipFolderPath>
          </li>
        </grains>
        <pitchRange>0.99~1.01</pitchRange>
        <volumeRange>50</volumeRange>
        <sustainRelease>0.02</sustainRelease>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>DirectBeam_End</defName>
    <context>MapOnly</context>
    <maxSimultaneous>2</maxSimultaneous>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <tempoAffectedByGameSpeed>true</tempoAffectedByGameSpeed>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>DirectBeam_Shot/Resolve</clipFolderPath>
          </li>
        </grains>
        <pitchRange>0.99~1.01</pitchRange>
        <volumeRange>50</volumeRange>
      </li>
    </subSounds>
  </SoundDef>

