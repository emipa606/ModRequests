<?xml version="1.0" encoding="utf-8"?>
<Patch>
<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Ludeon.RimWorld.Ideology</li>
    </mods>
    <match Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "TB_TankBed" or defName = "TB_TankBedDouble" or defName = "TB_TankBedPrototype"]/comps/li[@Class = "CompProperties_FacilityInUse"]</xpath>
            <value>
              <effectInUse>SleepAcceleratorActive</effectInUse>
           </value>
    </match>
</Operation>
</Patch>