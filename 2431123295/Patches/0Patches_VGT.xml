<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				
				
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="Plant_Rice"]/plant/immatureGraphicPath</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="Plant_Devilstrand"]/plant/immatureGraphicPath</xpath>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Plant_TreeBamboo"]/graphicData/graphicClass</xpath>
					<value>
						<graphicClass>Graphic_Random</graphicClass>
					</value>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="Plant_TreeBamboo"]/plant/immatureGraphicPath</xpath>
				</li>
				
				
				
			</operations>
		</match>
	</Operation>

</Patch>