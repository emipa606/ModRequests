<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--============ PAWN KINDS ============-->

  <PawnKindDef Name="SandPBase" Abstract="True">
    <race>Human</race>
    <defaultFactionType>TribeSandPeople</defaultFactionType> 
    <maxGenerationAge>60</maxGenerationAge>
    <apparelMoney>400~2000</apparelMoney>
    <apparelRequired> 
      <li>GS_SandP_Hood</li>	
      <li>GS_SandP_Body</li>
      <li>Apparel_Bandolier</li>
    </apparelRequired>
    <specificApparelRequirements> 
      <li>
        <apparelLayer>Overhead</apparelLayer>
        <stuff>Leather_Plain</stuff>
        <color>(204,180,150)</color>
      </li>
      <li>
        <apparelLayer>OnSkin</apparelLayer>
        <stuff>Leather_Plain</stuff>
        <color>(204,180,150)</color>
      </li>
      <li>
        <apparelLayer>Shell</apparelLayer>
        <stuff>Leather_Plain</stuff>
      </li>
    </specificApparelRequirements>
    <weaponMoney>700~2100</weaponMoney>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>
    <invNutrition>2.55</invNutrition>
    <invFoodDef>Pemmican</invFoodDef>
    <useFactionXenotypes>true</useFactionXenotypes>
    <gearHealthRange>0.7~3.2</gearHealthRange>
    <apparelTags>
      <li>Neolithic</li>              
    </apparelTags>
    <techHediffsMoney>50~50</techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <techHediffsChance>0.03</techHediffsChance>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
    <!--disallowedTraitsWithDegree>
      <li>
        <Industriousness>-1~-2</Industriousness>                   ?
        <Nerves>-1~-2</Nerves>
      </li>
    </disallowedTraitsWithDegree-->
    <initialWillRange>1~4</initialWillRange>
    <initialResistanceRange>15~30</initialResistanceRange>
    <!--apparelIgnoreSeasons>false</apparelIgnoreSeasons-->   <!-- ? -->
  </PawnKindDef>
  
  
  <PawnKindDef ParentName="SandPBase">
    <defName>SandP_Villager</defName>
    <label>sand raider villager</label>
    <combatPower>50</combatPower>
    <gearHealthRange>0.5~1.8</gearHealthRange>
    <apparelMoney>80~250</apparelMoney>
    <weaponMoney>90~250</weaponMoney>
    <weaponTags>                             
      <li>NeolithicMeleeBasic</li>
    </weaponTags>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>15~19</initialResistanceRange>
  </PawnKindDef>


  <PawnKindDef ParentName="SandPBase">
    <defName>SandP_Gunner</defName>
    <label>sand raider gunner</label>
    <combatPower>100</combatPower>
    <apparelMoney>200~450</apparelMoney>
    <weaponMoney>690~890</weaponMoney>
    <weaponTags>
      <li>SandRifle</li>
    </weaponTags>
  </PawnKindDef>


  <PawnKindDef ParentName="SandPBase">
    <defName>SandP_Warrior</defName>
    <label>sand raider warrior</label>
    <combatPower>70</combatPower>
    <canBeSapper>true</canBeSapper>
    <apparelMoney>200~450</apparelMoney>
    <weaponMoney>590~690</weaponMoney>
    <weaponTags>
