      <li>Violent</li>
    </requiredWorkTags>
  </PawnKindDef>


  <PawnKindDef ParentName="SandPBase">
    <defName>SandP_Hunter</defName>
    <label>sand raider hunter</label>
    <combatPower>60</combatPower>
    <backstoryFiltersOverride>
      <li>
        <categoriesChildhood>
          <li>Tribal</li>
        </categoriesChildhood>
        <categoriesAdulthood>
          <li>TribalHunter</li>
        </categoriesAdulthood>
      </li>
    </backstoryFiltersOverride>
    <apparelMoney>200~500</apparelMoney>
    <weaponMoney>690~790</weaponMoney>
    <weaponTags>
      <li>SandRifle</li>
    </weaponTags>
    <disallowedTraits>
      <li>Brawler</li>
    </disallowedTraits>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </PawnKindDef>


  <PawnKindDef ParentName="SandPBase">
    <defName>SandP_Trader</defName>
    <label>sand raider trader</label>
    <combatPower>50</combatPower>
    <trader>true</trader>
    <skills>
