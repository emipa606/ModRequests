<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="TribeRoughBase">
  <!-- MAIN -->
    
    <defName>TribeSandPeople</defName>
    <label>sand people tribe</label>
    <description>Sand People, also known as Tusken Raiders, are unfriendly and territorial nomadic sentients. The lack of resources in their homeworld's harsh environment made them extremely xenophobic and aggressive towards outsiders, whom they see as trespassers on their land. Warriors from their tribe are proficient in combat and usually wield gaderffii sticks and cycler rifles, making them serious foes despite their lack of technology.\n\nWhile difficult, it is still possible to turn them into an ally if one can prove their worth to these tribals.</description>      
    
  <!-- SETTINGS -->
    
    <pawnSingular>tribesperson</pawnSingular>
    <pawnsPlural>tribespeople</pawnsPlural>   
    <categoryTag>Tribal</categoryTag>           
    <canMakeRandomly>true</canMakeRandomly>     
    <canStageAttacks>true</canStageAttacks>     
    <techLevel>Neolithic</techLevel>
    <factionIconPath>UI/SF</factionIconPath>
    <factionNameMaker>NamerFactionTribalNeanderthal</factionNameMaker>          <!-- these names match the culture better than regular tribal -->
    <settlementNameMaker>NamerSettlementTribalNeaderthal</settlementNameMaker>  <!-- these names match the culture better than regular tribal -->
    <leaderTitle>chief</leaderTitle>
    <replacesFaction>TribeRough</replacesFaction>
    <earliestRaidDays>7</earliestRaidDays>                <!-- this early feels right considering how territorial sand people are -->
    <basicMemberKind>Tribesperson</basicMemberKind>       <!-- is it necessary in this case? -->
    
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <GS_SandPeople>999</GS_SandPeople>
      </xenotypeChances>
    </xenotypeSet>

    <backstoryFilters>
      <li>
        <categories>
          <li>Tribal</li>
        </categories>
      </li>
    </backstoryFilters>
    
    <allowedArrivalTemperatureRange>-20~65</allowedArrivalTemperatureRange>
    <minSettlementTemperatureChanceCurve>               <!-- will try to appear in warm temperatures -->
      <points>
        <li>(17.9,  0.00001)</li>
        <li>(18,    1)</li>
        <li>(24,    1)</li>
      </points>
    </minSettlementTemperatureChanceCurve>

  <!-- IDEO -->
  
    <allowedCultures><li>Corunan</li></allowedCultures>
    
    <requiredMemes Inherit="False">
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>   
    </requiredMemes>
    
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Transhumanist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
    </disallowedMemes>
    
    <disallowedPrecepts>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Male_Mandatory</li> 
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Female_Mandatory</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Male_CoveringAnythingButGroinDisapproved</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Female_CoveringAnythingButGroinDisapproved</li>
    </disallowedPrecepts>
    
    <colorSpectrum>
      <li>(0.85, 0, 0)</li>
      <li>(0.85, 0.7, 0.7)</li>
    </colorSpectrum>
    
    <structureMemeWeights Inherit="False">
      <Structure_Animist MayRequire="Ludeon.RimWorld.Ideology">4</Structure_Animist>
      <Structure_TheistEmbodied MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistEmbodied>
      <Structure_TheistAbstract MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistAbstract>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
      <Structure_OriginChristian MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginChristian>
      <Structure_OriginIslamic MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginIslamic>
      <Structure_OriginHindu MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginHindu>
      <Structure_OriginBuddhist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginBuddhist>
    </structureMemeWeights>
    
    
<!--======================== GROUP TYPES ========================-->
    
    
    <pawnGroupMakers Inherit="False">
      
      <li>
        <!-- Normal fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <SandP_Villager>5</SandP_Villager>
          <SandP_Warrior>4</SandP_Warrior>
          <SandP_Gunner>3</SandP_Gunner>
        </options>
      </li>
      
      <li>
        <!-- Normal fights, melee only -->
        <kindDef>Combat</kindDef>
        <commonality>60</commonality>
        <options>
          <SandP_Berserker>2</SandP_Berserker>
          <SandP_Warrior>8</SandP_Warrior>
          <SandP_ChiefMelee>1</SandP_ChiefMelee>
      </options>
      </li>
      
      <li>
        <!-- Normal fights, ranged only -->
        <kindDef>Combat</kindDef>
        <commonality>60</commonality>
        <options>
          <SandP_Gunner>10</SandP_Gunner>
          <SandP_ChiefRanged>1</SandP_ChiefRanged>
        </options>
      </li>
      
      <li>
        <!-- breach-capable fights, breachers plus ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>5</commonality>
        <options>
          <SandP_Breacher>3</SandP_Breacher>
          <SandP_Warrior>5</SandP_Warrior>
          <SandP_Gunner>2</SandP_Gunner>
          <SandP_Hunter>1</SandP_Hunter>
          <SandP_Sniper>1</SandP_Sniper>
          <SandP_Berserker>5</SandP_Berserker>
          <SandP_ChiefRanged>1</SandP_ChiefRanged>
          <SandP_ChiefMelee>2</SandP_ChiefMelee>
      </options>
      </li>
      
      <li>
        <!-- Peaceful -->
        <kindDef>Peaceful</kindDef>
        <options>
          <SandP_Warrior>10</SandP_Warrior>
          <SandP_Child>10</SandP_Child>
          <SandP_Gunner>1</SandP_Gunner>
          <SandP_Hunter>1</SandP_Hunter>
          <SandP_Sniper>1</SandP_Sniper>
          <SandP_Berserker>5</SandP_Berserker>
          <SandP_ChiefRanged>1</SandP_ChiefRanged>
          <SandP_ChiefMelee>2</SandP_ChiefMelee>
        </options>
      </li>
      
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Tribal_Trader>1</Tribal_Trader>
        </traders>
        <carriers>
          <Bantha>4</Bantha>
        </carriers>
        <guards>
          <SandP_Warrior>5</SandP_Warrior>
          <SandP_Gunner>1</SandP_Gunner>
          <SandP_Sniper>1</SandP_Sniper>
          <SandP_Berserker>3</SandP_Berserker>
        </guards>
      </li>
      
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <SandP_Warrior>7</SandP_Warrior>
          <SandP_Gunner>1</SandP_Gunner>
          <SandP_Hunter>1</SandP_Hunter>
          <SandP_Sniper>1</SandP_Sniper>
          <SandP_Berserker>7</SandP_Berserker>
          <SandP_ChiefRanged>1</SandP_ChiefRanged>
          <SandP_ChiefMelee>3</SandP_ChiefMelee>
        </options>
      </li>
      
      <li>
        <kindDef>Settlement_RangedOnly</kindDef>
        <options>
          <SandP_Gunner>10</SandP_Gunner>
          <SandP_Hunter>10</SandP_Hunter>
          <SandP_Sniper>10</SandP_Sniper>
          <SandP_ChiefRanged>1</SandP_ChiefRanged>
          <SandP_ChiefMelee>10</SandP_ChiefMelee>
        </options>
      </li>
      
    </pawnGroupMakers>
    
  </FactionDef>


</Defs>