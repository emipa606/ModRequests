<?xml version="1.0" encoding="utf-8" ?>
<Defs>



  <ThingDef ParentName="HatMakeableBase">
    <defName>GS_SandP_Hood</defName>
    <label>Sandpeople mask</label>
    <description>Sandpeople masks are originally developed to help survive the harsh climate. The mouth grills are designed to prevent precious moisture from leaving the bodies, while the goggles likely serve to protect their vulnerable eyes from harsh sandstorms.</description>
   



   <graphicData>
      <texPath>Things/Apparel/Head/SandHead</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  	  <drawSize>1.3</drawSize>
    </graphicData>
	
	
	
	
    <uiIconScale>1.15</uiIconScale>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Mass>2</Mass>
      <EquipDelay>0.8</EquipDelay>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
	  <Insulation_Heat>10</Insulation_Heat>
    </statBases>
	
	
	
    <equippedStatOffsets>
      <SocialImpact>0.2</SocialImpact>
    </equippedStatOffsets>
	
	
	
	
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	
	
	
    <apparel>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <wornGraphicPath>Things/Apparel/Head/SandHead</wornGraphicPath>
		<bodyPartGroups>
        <li>FullHead</li>
		</bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
	  <useWornGraphicMask>true</useWornGraphicMask>
	  <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
	
	
	
<!--    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>-->
	
	
	
	
		<recipeMaker>
			<!--<researchPrerequisite>xdsd</researchPrerequisite>-->
			<recipeUsers Inherit="False">
				    <li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
	
	
	
  </ThingDef>
  
  
  
  
  
  
  <!--Body-->
  
  
  
  
   <ThingDef ParentName="ApparelMakeableBase">
		<defName>GS_SandP_Body</defName>
		<label>Sandpeople wraps</label>
		<description>A full body wrap which is made out of leather or fabric.Great for covering skin and keeping out the heat.</description>
		<graphicData>
		<texPath>Things/Apparel/Body/Wraps</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		
		
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
		
        <generateCommonality>0.000001</generateCommonality>
		<costStuffCount>120</costStuffCount>
		
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		
		
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>2200</WorkToMake>
			<Mass>0.45</Mass>
			<Flammability>0.2</Flammability>
            <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>3</EquipDelay>
		</statBases>
		
		
		<equippedStatOffsets>
			<!--<WorkSpeedGlobal>0.05</WorkSpeedGlobal>-->
		</equippedStatOffsets>
		
		
		
    <thingCategories Inherit='False'>
      <li>Apparel</li>
    </thingCategories>
	
	
		<apparel>
			<bodyPartGroups>
                <li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			
			
			<wornGraphicPath>Things/Apparel/Body/Wraps</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			
			
<!--			<tags>
				<li>IndustrialAdvanced</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
            </defaultOutfitTags>-->
			
			
		</apparel>
		<recipeMaker>
			<!--<researchPrerequisite>xdsd</researchPrerequisite>-->
			<recipeUsers Inherit="False">
				    <li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
    </ThingDef>
  
  
  
</Defs>