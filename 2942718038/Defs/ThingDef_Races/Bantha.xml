<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="AnimalThingBase">
    <defName>Bantha</defName>
    <label>Bantha</label>
    <description>Banthas are sturdy and easily domesticated mammals used as beasts of burden that are found all over rimworlds.They are quite social and make excellent companions.</description>
	
    <statBases>
      <MoveSpeed>4.8</MoveSpeed>
      <MarketValue>700</MarketValue>
      <ComfyTemperatureMin>-55</ComfyTemperatureMin>
      <ComfyTemperatureMax>65</ComfyTemperatureMax>
      <FilthRate>24</FilthRate>
	  <CaravanRidingSpeedFactor>1.3</CaravanRidingSpeedFactor>
    </statBases>
    <uiIconScale>1.35</uiIconScale>
	
	
    <comps>
      <li Class="CompProperties_Shearable">
        <woolDef>WoolBantha</woolDef>
        <shearIntervalDays>15</shearIntervalDays>
        <woolAmount>120</woolAmount>
      </li>
	  
	   <li Class="CompProperties_Milkable">
        <milkDef>GS_Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>11</milkAmount>
      </li>
	  
	  
    </comps>
	
	
	
    <race>
      <herdAnimal>true</herdAnimal>
      <body>QuadrupedAnimalWithHooves</body>
      <baseBodySize>4.0</baseBodySize>
      <baseHealthScale>3.6</baseHealthScale>
      <baseHungerRate>0.4</baseHungerRate>
      <foodType>OmnivoreAnimal, VegetarianRoughAnimal</foodType>
      <leatherDef>GS_Leather_Bantha</leatherDef>
      <gestationPeriodDays>10</gestationPeriodDays>
      <wildness>0.4</wildness>
      <roamMtbDays>2</roamMtbDays>
      <trainability>Advanced</trainability>
      <packAnimal>true</packAnimal>
      <lifeExpectancy>35</lifeExpectancy>
      <manhunterOnDamageChance>0.5</manhunterOnDamageChance>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.25</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.4</minAge>
          <soundWounded>Pawn_Bantha_Wounded</soundWounded>
          <soundDeath>Pawn_Bantha_Death</soundDeath>
          <soundCall>Pawn_Bantha_Call</soundCall>
          <soundAngry>Pawn_Bantha_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
      <headPosPerRotation>
        <li>(0.0, 0, 0.05)</li>
        <li>(0.285, 0, 0.02)</li>
        <li>(0.0, 0, -0.12)</li>
        <li>(-0.285, 0, 0.02)</li>
      </headPosPerRotation>
    </race>
	
    <tradeTags>
	<li>AnimalUncommon</li>
    </tradeTags>
	
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
      </li>
    </tools>
  </ThingDef>

