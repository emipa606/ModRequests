<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- a higher <baseHealthScale> ties to body parthealth and the health/pain bar under pawn + ease of overall death-->
 
  <!--■■■ LOOSE PARTS ■■■■■■■■■■■■■■■-->
  <!--■ PNEUMOSTOME ■-->
  <BodyPartDef>
    <defName>KWVR_BODYPART_TINY_PNEUMOSTOME_DEF</defName>
    <label>pneumostome</label>
    <hitPoints>4</hitPoints>
    
    <bleedRate>0.1</bleedRate>
    
    <alive>true</alive>
    <solid>false</solid>
    <skinCovered>false</skinCovered>
    <canSuggestAmputation>false</canSuggestAmputation>
    
    <tags>
      <li>BreathingSource</li>
      <!--<li>BreathingPathway</li>-->
    </tags>
  </BodyPartDef>
  
  <!--■ KWIVER EYE ■-->
  <BodyPartDef>
    <defName>KWVR_BODYPART_TINY_EYE_DEF</defName>
    <label>eye</label>
    <hitPoints>4</hitPoints>
    
    <bleedRate>0.1</bleedRate>
    
    <permanentInjuryChanceFactor>15</permanentInjuryChanceFactor>
    <delicate>false</delicate>
    <skinCovered>false</skinCovered>
    <socketed>true</socketed>
    
    <tags>
      <li>SightSource</li>
    </tags>
  </BodyPartDef>
  
  <!--■ BRAIN ■-->
  <BodyPartDef>
    <defName>KWVR_BODYPART_TINY_MEMONICGANGLIA_DEF</defName>
    <label>memonic ganglia</label>
    <hitPoints>12</hitPoints>
    <permanentInjuryChanceFactor>15</permanentInjuryChanceFactor>
    <delicate>true</delicate>
    <skinCovered>false</skinCovered>
    
    <canSuggestAmputation>true</canSuggestAmputation>
    <spawnThingOnRemoved>KWVR_RESOURCE_MNEMONICMOLASSES_DEF</spawnThingOnRemoved>
    
    <tags>
      <li>MetabolismSource</li>
      <li>ConsciousnessSource</li>
    </tags>
  </BodyPartDef>

 
  
  <!--■■■ TENTACLES ■■■■■■■■■■■■■■■-->
  <!--■ GROUP: TOP TENTACLES ■-->
  <BodyPartGroupDef>
    <defName>KWVR_BODYGROUP_TINY_TOPTENTACLES_DEF</defName>
    <label>top tentacles</label>
    <listOrder>220</listOrder>
  </BodyPartGroupDef>

  <BodyPartDef>
    <defName>KWVR_BODYPART_TINY_TENTACLE_DEF</defName>
    <label>tentacle</label>
    <hitPoints>10</hitPoints>
    
    <bleedRate>0.33</bleedRate>
    <frostbiteVulnerability>1</frostbiteVulnerability>
    
    <skinCovered>true</skinCovered>

    <tags>
      <li>ManipulationLimbCore</li>
      <li>ManipulationLimbSegment</li>
    </tags>
  </BodyPartDef>
  
  <!--■■■ SHELL ■■■■■■■■■■■■■■■-->
  <!--■ GROUP: TOP SHELL ■-->
  <BodyPartGroupDef>
    <defName>KWVR_BODYGROUP_TINY_TOPSHELLSEGMENT_DEF</defName>
    <label>core shell segment</label>
    <listOrder>200</listOrder>
  </BodyPartGroupDef>
  <!--■ GROUP: BOTTOM SHELL ■-->
  <BodyPartGroupDef>
    <defName>KWVR_BODYGROUP_TINY_BOTTOMSHELLSEGMENT_DEF</defName>
    <label>core shell segment</label>
    <listOrder>100</listOrder>
  </BodyPartGroupDef>
  <!--■ BODY PART: SHELL ■-->
  <BodyPartDef>
    <defName>KWVR_BODYPART_TINY_SHELL_DEF</defName>
    <label>shell</label>
    <hitPoints>25</hitPoints>
    
    <bleedRate>0</bleedRate>
    
    <frostbiteVulnerability>0</frostbiteVulnerability>
    <solid>true</solid>
    
    <skinCovered>false</skinCovered>
  </BodyPartDef>
 
  <!--■■■ BODY SEGMENT ■■■■■■■■■■■■■■■-->
  <!--■ GROUP: CORE BODY ■-->
  <BodyPartGroupDef>
    <defName>KWVR_BODYGROUP_TINY_CORESEGMENT_DEF</defName>
    <label>core segment</label>
    <listOrder>150</listOrder>
  </BodyPartGroupDef>
  <!--■ BODY PART: CORE ■-->
  <BodyPartDef>
    <defName>KWVR_BODYPART_TINY_CORESEGMENT_DEF</defName>
    <label>core segment</label>
    <hitPoints>30</hitPoints>
    
    <bleedRate>0.33</bleedRate>
    <frostbiteVulnerability>1</frostbiteVulnerability>
    
    <skinCovered>true</skinCovered>
    <canSuggestAmputation>false</canSuggestAmputation>
    
    <tags>
      <li>MovingLimbCore</li>
      <li>TalkingSource</li>
    </tags>
  </BodyPartDef>
  

</Defs>
