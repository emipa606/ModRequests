<Defs>

<!--■■■■■■■■■■■■■■■■■
       1. No Food Poison
   
       ■■■■■■■■■■■■■■■■■--> 
  
  <!--■■■■■■■■■■■■■■■■■■1. NO POSION ■■■■■■■■■■■■■■■■■■■■■■■-->
  <HediffDef ParentName="DiseaseBase">
    <defName>KWVR_HEDIFF_IMMUNEFOODPOISON_DEF</defName>
    <label>Digestor</label>
    <labelNoun>Digestor</labelNoun>
    
    <description>Powerful enzymes, mightly macrophages, and an unusual biology give Kwiver a powerful naturally immunity.</description>
    <defaultLabelColor>(178,158,216)</defaultLabelColor>
    
    <chronic>true</chronic>
    <isBad>false</isBad>
    <tendable>false</tendable>
    <everCurableByItem>false</everCurableByItem>
    <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
    <makesAlert>false</makesAlert>
    
    <stages>
      <li>
        <foodPoisoningChanceFactor>0</foodPoisoningChanceFactor>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>
  painOffset;
  
  <!--■■■■■■■■■■■■■■■■■■2. PAIN OFFSET ■■■■■■■■■■■■■■■■■■■■■■■-->
  <HediffDef ParentName="DiseaseBase">
    <defName>KWVR_HEDIFF_PAINRESISTTIER1_DEF</defName>
    <label>Advil</label>
    <labelNoun>Advil</labelNoun>
    
    <description>A HEDIFF which should be hidden saving me the effort of writing a well researched, fluffy, description. Adds even more pain resistance.</description>
    <defaultLabelColor>(178,158,216)</defaultLabelColor>
    
    <chronic>true</chronic>
    <isBad>false</isBad>
    <tendable>false</tendable>
    <everCurableByItem>false</everCurableByItem>
    <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
    <makesAlert>false</makesAlert>
    
    <stages>
      <li>
        <painOffset>-0.2</painOffset>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>
