<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef Name="Crashlanded">
    <defName>KWVR_SCENARIO_DEF</defName>
    <label>&lt;color=#a89ed8&gt;&lt;size=16&gt;Kwiver Collective&lt;/size&gt;&lt;/color&gt;</label>
    <description>A collective of Kwiver, either newly sprung through spores dispersed at some point past or a group of more mature individuals who've detached from a larger collective.</description>
    <scenario>
      <summary>A tribal collective of three Kwiver.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>KWVR_FACTION_PLAYER_DEF</factionDef>
      </playerFaction>
      <parts>

        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>3</pawnCount>
          <pawnChoiceCount>10</pawnChoiceCount>
        </li>

        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
        </li>
        
        <!-- Player pawns modifiers -->
        <li Class="ScenPart_ForcedHediff">
          <def>ForcedHediff</def>
          <visible>false</visible>
          <context>PlayerStarter</context>
          <chance>0.3</chance>
          <hediff>Malnutrition</hediff>
          <severityRange>0.05~0.1</severityRange>
        </li>
        <li Class="ScenPart_SetNeedLevel">
          <def>SetNeedLevel</def>
          <visible>false</visible>
          <context>PlayerStarter</context>
          <chance>1.0</chance>
          <need>Food</need>
          <levelRange>0~0.1</levelRange>
        </li>
    
        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>KWVR_RESOURCE_PROTEINPASTE_DEF</thingDef>
          <count>10</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>KWVR_RESOURCE_PROTEINPASTE_DEF</thingDef>
          <count>10</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>KWVR_RESOURCE_PROTEINPASTE_DEF</thingDef>
          <count>10</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>KWVR_RESOURCE_KERATINCRUST_DEF</thingDef>
          <count>8</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RawFungus</thingDef>
          <count>220</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Meat_Human</thingDef>
          <count>160</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Pila</thingDef>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <count>1</count>
          <bondToRandomPlayerPawnChance>0.2</bondToRandomPlayerPawnChance>
        </li>
        
        <!-- Scatter some things near player start -->
   <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>23</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>21</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>16</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>14</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>21</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>20</count>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>


</Defs>
