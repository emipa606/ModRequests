    <explosionHeatEnergyPerCell>0</explosionHeatEnergyPerCell>
    
    <explosionCellMote>KWVR_MOTE_SMOKE_1SPORE_DEF</explosionCellMote>
    <explosionColorCenter>(173,158,216)</explosionColorCenter>
    <explosionColorEdge>(163,158,216)</explosionColorEdge>
    <soundExplosion>Explosion_Smoke</soundExplosion>
    <combatLogRules>Damage_Smoke</combatLogRules>
  </DamageDef>


