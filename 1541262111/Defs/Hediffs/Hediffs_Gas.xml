          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.7</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.62</minSeverity>
        <vomitMtbDays>0.75</vomitMtbDays>
        <painOffset>0.5</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.7</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>-0.7</setMax>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.7</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.9</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <vomitMtbDays>0.75</vomitMtbDays>
        <painOffset>0.5</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.9</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>-0.9</setMax>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.9</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

