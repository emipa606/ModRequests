<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
	<operations>
		<li Class="PatchOperationRemove">
			<xpath>/Defs/BiomeDef[defName="Ocean"]/impassable</xpath>
		</li>
		<li Class="PatchOperationRemove">
			<xpath>/Defs/BiomeDef[defName="Lake"]/impassable</xpath>
		</li>
		<li Class = "PatchOperationRemove">
			<xpath>/Defs/BiomeDef[defName="Ocean"]/canBuildBase</xpath>
		</li>
		<li Class = "PatchOperationRemove">
			<xpath>/Defs/BiomeDef[defName="Lake"]/canBuildBase</xpath>
		</li>
		<li Class = "PatchOperationRemove">
			<xpath>/Defs/BiomeDef[defName="Ocean"]/allowRoads</xpath>
		</li>
		<li Class = "PatchOperationRemove">
			<xpath>/Defs/BiomeDef[defName="Lake"]/allowRoads</xpath>
		</li>
		<li Class = "PatchOperationRemove">
			<xpath>/Defs/BiomeDef[defName="Ocean"]/allowRivers</xpath>
		</li>
		<li Class = "PatchOperationRemove">
			<xpath>/Defs/BiomeDef[defName="Lake"]/allowRivers</xpath>
		</li>
		<li Class="PatchOperationReplace">
			<xpath>/Defs/BiomeDef[defName="Ocean"]/hasVirtualPlants</xpath>
			<value>
				<hasVirtualPlants>true</hasVirtualPlants>
			</value>
		</li>
		<li Class="PatchOperationReplace">
			<xpath>/Defs/BiomeDef[defName="Lake"]/hasVirtualPlants</xpath>
			<value>
				<hasVirtualPlants>true</hasVirtualPlants>
			</value>
		</li>
		<li Class="PatchOperationInsert">
			<xpath>/Defs/BiomeDef[defName="Ocean"]/label</xpath>
			<value>
				<baseWeatherCommonalities>
					<RainyThunderstorm>4</RainyThunderstorm>
				</baseWeatherCommonalities>
			</value>
		</li>
		<li Class="PatchOperationInsert">
			<xpath>/Defs/BiomeDef[defName="Ocean"]/label</xpath>
			<value>
				<wildPlants>
					<Plant_TreeWillow>1.0</Plant_TreeWillow>
					<Plant_TreeCypress>1.0</Plant_TreeCypress>
					<Plant_TreeMaple>1.0</Plant_TreeMaple>
				</wildPlants>
			</value>
		</li>
	</operations>
	</Operation>

</Patch>

