<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="GuPBetaApparelBase"> 
		<defName>StarsUniversityUniform_Hat</defName>
		<label>StarsUniversityUniform-Hat</label>
		<description>StarsUniversityUniform-Hat.</description>
		<graphicData>
			<texPath>Things/BetaApparel/Hat/GuP-StarsUniversityUniform-Hat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.0</drawSize>
		</graphicData>
		<statBases>
	        <WorkToMake>8000</WorkToMake>
	        <MaxHitPoints>450</MaxHitPoints>
	        <Mass>1.2</Mass>
	        <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
	        <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
	        <ArmorRating_Heat>0.4</ArmorRating_Heat>
	        <EquipDelay>1.5</EquipDelay>
	        <Beauty>3</Beauty>
		</statBases>
		<equippedStatOffsets>
			     <PainShockThreshold>0.10</PainShockThreshold>
			     <ShootingAccuracyPawn>0.10</ShootingAccuracyPawn>
			     <AimingDelayFactor>-0.05</AimingDelayFactor>
		</equippedStatOffsets>
		<costList> 
			  	 <Cloth>30</Cloth>
    		 	 <Steel>40</Steel>
		</costList>
		<generateAllowChance>0</generateAllowChance>
		<generateCommonality>0</generateCommonality>
		<tradeability>Sellable</tradeability>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/BetaApparel/Hat/GuP-StarsUniversityUniform-Hat</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>


			<layers>
				<li>Overhead</li>
			</layers>
	    </apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>3</weight>
					<only>RGBA(81,84,78,255)</only>
				</li>
			</options>
		</colorGenerator>
		<thingCategories>
			<li>GuP_Hat</li>
		</thingCategories>
	</ThingDef>

