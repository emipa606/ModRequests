<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  
  <!-- Using the magical wonders of JecsTools -->
  <Operation Class="PatchOperationFindMod">
	<mods>
		<li>Combat Extended</li>
	</mods>
	<match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Turret_Blaster"]/comps</xpath>
				<value>
					<li Class="GTM.Comp_GTM_Base"/>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Turret_Heavy"]/comps</xpath>
				<value>
					<li Class="GTM.Comp_GTM_Base"/>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Turret_Medium"]/comps</xpath>
				<value>
					<li Class="GTM.Comp_GTM_Base"/>
				</value>
			</li>
			
		</operations>
	</match>
  </Operation>

</Patch>