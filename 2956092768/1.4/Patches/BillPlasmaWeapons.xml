<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  
  <!-- Using the magical wonders of JecsTools -->
  <Operation Class="PatchOperationFindMod">
	<mods>
		<li>Bill Doors' Plasma Weapons</li>
	</mods>
	<match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="BDP_Turret_Plasma"]/comps</xpath>
				<value>
					<li Class="GTM.Comp_GTM_Base"/>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="BDP_Turret_Plasmaheavy"]/comps</xpath>
				<value>
					<li Class="GTM.Comp_GTM_Base"/>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="BDP_Turret_PlasmaSmall"]/comps</xpath>
				<value>
					<li Class="GTM.Comp_GTM_Base"/>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="BDP_Turret_Extinguisher"]/comps</xpath>
				<value>
					<li Class="GTM.Comp_GTM_Base"/>
				</value>
			</li>
			
		</operations>
	</match>
  </Operation>

</Patch>