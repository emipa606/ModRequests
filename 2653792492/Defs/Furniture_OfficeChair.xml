<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>OfficeChair</defName>
		<label>office chair</label>
		<description>A comfortable and attractive office for sitting at workstations and workbenches.</description>
		<graphicData>
			<texPath>Things/Buildings/OfficeChair</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,3)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<rectN>(0,0,1,0.703125)</rectN>
				<rectS>(0.09375,0,0.84375,1)</rectS>
				<rectE>(0,0,0.84375,0.625)</rectE>
				<rectW>(0.15625,0,0.84375,0.625)</rectW>
			</damageData>
			<shadowData>
				<volume>(0.3, 0.33, 0.3)</volume>
			</shadowData>
		</graphicData>
		<uiIconScale>0.9</uiIconScale>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToBuild>6000</WorkToBuild>
			<Mass>5</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>2</Beauty>
			<Comfort>0.8</Comfort>
			<WorkTableWorkSpeedFactor>0.05</WorkTableWorkSpeedFactor>
		</statBases>
		<socialPropernessMatters>true</socialPropernessMatters>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
			<li>Metallic</li>
			<li>Stony</li>
			<li>Woody</li>
		</stuffCategories>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
		<costStuffCount>50</costStuffCount>
		<costList>
			<Steel>10</Steel>
		</costList>
		<pathCost>30</pathCost>
		<fillPercent>0.40</fillPercent>
		<defaultPlacingRot>North</defaultPlacingRot>
		<constructionSkillPrerequisite>2</constructionSkillPrerequisite>
		<building>
			<isSittable>true</isSittable>
			<destroySound>BuildingDestroyed_Soft_Small</destroySound>
		</building>
		<designationCategory>Furniture</designationCategory>
	</ThingDef>

</Defs>