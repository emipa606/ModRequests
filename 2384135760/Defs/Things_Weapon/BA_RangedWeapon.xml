  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>BA_Gun_Jezail_P</defName>
    <label>Jezail Short musket</label>
    <description>A traditional Firearm which have an iconic curved stock which widely using by tribal.</description>
    <graphicData>
      <texPath>Things/Weapon/Jezail_Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.2</drawSize>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <comps>
        <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
        </li>
        <li Class="BA_Class.RainFireOffShoot_CompProperties">
			<FireOffWeather>
			<li>Fog</li>
			<li>FoggyRain</li>			
			<li>Rain</li>
			<li>RainyThunderstorm</li>
			<li>SnowHard</li>			
			<li>SnowGentle</li>
			</FireOffWeather>
			<ThickCount>10</ThickCount>
			<Smoke>Musket_Smoke</Smoke>
        </li>
    </comps>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.5</Mass>
      <AccuracyTouch>0.7</AccuracyTouch>
      <AccuracyShort>0.45</AccuracyShort>
      <AccuracyMedium>0.15</AccuracyMedium>
      <AccuracyLong>0.1</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
    </statBases>
	<equippedAngleOffset>0</equippedAngleOffset>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
	  <li>NeolithicRangedChief</li>
    </weaponTags>
    <costList>
      <WoodLog>25</WoodLog>
	  <Steel>12</Steel>
    </costList>
    <recipeMaker>
	  <recipeUsers>
	    <li>CraftingSpot</li>	 
		<li>BA_FueledGunSmithy</li>
	  </recipeUsers>
	  <researchPrerequisite>BA_Thunderer</researchPrerequisite>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>BA_Class.Verb_RainFireOffShoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BA_Bullet_BasicRound</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>25.9</range>
        <soundCast>BA_Musket</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
