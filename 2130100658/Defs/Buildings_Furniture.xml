<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="AdvancedPolyBed" ParentName="ArtableBedBase" Abstract="True">
	  <thingClass>AdvancedPolyBeds.Building_RefreshingPolyBed</thingClass>
    <castEdgeShadows>True</castEdgeShadows>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints><!-- 150 per slot -->
      <Mass>75</Mass><!-- 75 - 25 per slot -->
      <Beauty>12</Beauty><!-- 12 per slot -->
      <Flammability>1.0</Flammability>
      <BedRestEffectiveness>1.3</BedRestEffectiveness>
      <Comfort>1.15</Comfort>
      <ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
			<SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
      <WorkToBuild>10000</WorkToBuild><!-- 10000 per slot - 5000 -->
		</statBases>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
		      <li>Table_RoyalDresser</li>
		      <li>Table_RoyalEndTable</li>
		  		<li>Table_Wardrobe</li>
				  <li>Table_IlluminatedEndTable</li>
				  <li>Table_IlluminatedDresser</li>
        </linkableFacilities>
      </li>
    </comps>
	  <tickerType>Normal</tickerType>  
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>60</costStuffCount><!-- 60 per space -->
    <costList>
	    <Uranium>5</Uranium><!-- 5 per space -->
      <ComponentSpacer>1</ComponentSpacer><!-- 1 per space -->
    </costList>
    <building>
      <bed_showSleeperBody>false</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
    </building>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <researchPrerequisites>
      <li>SpacerFurniture</li>
    </researchPrerequisites>
    <techLevel>Spacer</techLevel>
    <uiIconScale>1</uiIconScale>
    <designationCategory>AOMorefurniture</designationCategory>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <defaultPlacingRot>South</defaultPlacingRot>
  </ThingDef>

  <ThingDef ParentName="AdvancedPolyBed">
    <defName>Bed_AdvTripleBed</defName>
    <label>advanced triple bed</label>
    <description>A powered high-tech triple bed that automatically readjusts itself to perfectly fit the contours of all sleepers, with built in white noise generation. Sleepers often report feeling refreshed and more alert the morning after.</description>
    <graphicData>
      <texPath>Things/Furniture/AdvancedBedTriple/AdvancedBedTriple</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,2)</drawSize>
    </graphicData>
    <size>(3,2)</size>
    <statBases>
      <MaxHitPoints>450</MaxHitPoints><!-- 150 per slot -->
      <Mass>200</Mass><!-- 75 - 25 per slot -->
      <Beauty>36</Beauty><!-- 12 per slot -->
      <WorkToBuild>25000</WorkToBuild><!-- 10000 per slot - 5000 -->
    </statBases>
    <costList>
	    <Uranium>15</Uranium><!-- 5 per space -->
      <ComponentSpacer>3</ComponentSpacer><!-- 1 per space -->
    </costList>
    <costStuffCount>180</costStuffCount><!-- 60 per space -->
  </ThingDef>

