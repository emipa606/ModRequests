    <size>(5,2)</size>
    <statBases>
      <MaxHitPoints>750</MaxHitPoints><!-- 150 per slot -->
      <Mass>350</Mass><!-- 75 - 25 per slot -->
      <Beauty>60</Beauty><!-- 12 per slot -->
      <WorkToBuild>45000</WorkToBuild><!-- 10000 per slot - 5000 -->
