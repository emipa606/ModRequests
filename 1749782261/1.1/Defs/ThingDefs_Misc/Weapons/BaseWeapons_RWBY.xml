<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- not craftable melee weapons-->
	<ThingDef Name="BaseMeleeWeapon_RWBY" Abstract="True" ParentName="BaseWeapon">
		<techLevel>Spacer</techLevel>
		<smeltable>true</smeltable>
		<weaponTags>
			<li>DustWeapons</li>
		</weaponTags>
		<thingCategories>
			<li>DustWeapons</li>
		</thingCategories>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<statBases>
			<Flammability>0.5</Flammability>
		</statBases>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	<!-- melee weapons that are craftable at the machining table, also needs gunsmithing, because every weapon is also a gun -->
	<ThingDef Name="BaseCraftableMeleeWeapon_RWBY" Abstract="True" ParentName="BaseMeleeWeapon_RWBY">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>TableDustWorkshop</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
			<researchPrerequisite>DustWeapons</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>

	<!-- not craftable ranged weapons-->
	<ThingDef Name="BaseGun_RWBY" Abstract="True" ParentName="BaseWeapon">
		<techLevel>Spacer</techLevel>
		<smeltable>true</smeltable>		
		<weaponTags>
			<li>DustWeapons</li>
		</weaponTags>
		<thingCategories>
			<li>DustWeapons</li>
		</thingCategories>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<statBases>
			<Flammability>0.5</Flammability>
		</statBases>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	<!-- craftable ranged weapons-->
	<ThingDef Name="BaseMakeableGun_RWBY" ParentName="BaseGun_RWBY" Abstract="True">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>TableDustWorkshop</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
			<researchPrerequisite>DustWeapons</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>

</Defs>
