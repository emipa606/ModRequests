<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<FactionDef>
		<defName>Creatures_of_Grimm</defName>
		<label>Creatures of Grimm</label>
		<description>Attracted by negavite emotions, they hunt every humanlike.</description>
		<pawnSingular>grimm</pawnSingular>
		<pawnsPlural>grimm</pawnsPlural>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<fixedName>Creatures of Grimm</fixedName>
		<factionIconPath>World/WorldObjects/DefaultSettlement</factionIconPath>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(700, 0.4)</li>
				<li>(900, 0.7)</li>
				<li>(1200, 1.5)</li>
				<li>(4000, 2.5)</li>
			</points>
		</raidCommonalityFromPointsCurve>
		<humanlikeFaction>false</humanlikeFaction>
		<hidden>true</hidden>
		<autoFlee>false</autoFlee>
		<canUseAvoidGrid>false</canUseAvoidGrid>
		<techLevel>Animal</techLevel>
		<earliestRaidDays>5</earliestRaidDays>
		<permanentEnemy>true</permanentEnemy>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(400,200)</li>
				<li>(900,300)</li>
				<li>(100000,10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Ground -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<disallowedStrategies>
					<li>Siege</li>
					<li>ImmediateAttackSappers</li>
				</disallowedStrategies>
				<options>
					<Grimm_Boarbatusk>8</Grimm_Boarbatusk>
					<Grimm_Beowolf>10</Grimm_Beowolf>
					<Grimm_Ursa>6</Grimm_Ursa>
					<Grimm_DeathStalker>3</Grimm_DeathStalker>
				</options>
			</li>
			<li>
				<!-- Air -->
				<kindDef>Combat</kindDef>
				<commonality>50</commonality>
				<disallowedStrategies>
					<li>Siege</li>
					<li>ImmediateAttackSappers</li>
				</disallowedStrategies>
				<options>
					<Grimm_Griffon>10</Grimm_Griffon>
					<Grimm_Nevermore>3</Grimm_Nevermore>
				</options>
			</li>
			<li>
				<!-- Swarm -->
				<kindDef>Combat</kindDef>
				<commonality>50</commonality>
				<disallowedStrategies>
					<li>Siege</li>
					<li>ImmediateAttackSappers</li>
				</disallowedStrategies>
				<options>
					<Grimm_Lancer>10</Grimm_Lancer>
					<Grimm_LancerQueen>2</Grimm_LancerQueen>
				</options>
			</li>
		</pawnGroupMakers>
		<allowedArrivalTemperatureRange>-200~200</allowedArrivalTemperatureRange>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
	</FactionDef>

</Defs>