				<canTargetSelf>false</canTargetSelf>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</MainVerb>
	</RWBYRemnant.SemblanceDef>

	<RWBYRemnant.SemblanceDef ParentName="BaseAbilityRWBY">
		<defName>Pyrrha_MagneticPulse</defName>
		<label>magnetic pulse</label>
		<uiIconPath>Things/UI/Ability_MagneticPulse</uiIconPath>
		<description>Emit a magnetic pulse that heavily damages all mechanical things in a range of 10 fields. Beware of friendly fire or metallic things on the ground.</description>
		<auraCost>0.2</auraCost>
		<MainVerb Class="AbilityUser.VerbProperties_Ability">
			<verbClass>RWBYRemnant.Verb_AbilityMagneticPulse</verbClass>
			<tooltipShowProjectileDamage>false</tooltipShowProjectileDamage>
			<tooltipShowExtraDamages>false</tooltipShowExtraDamages>
			<tooltipShowHediffsToApply>false</tooltipShowHediffsToApply>
			<tooltipShowMentalStatesToApply>false</tooltipShowMentalStatesToApply>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>RWBY_Ability_Dummy_Projectile</defaultProjectile>
			<abilityDef>Pyrrha_MagneticPulse</abilityDef>
			<isViolent>false</isViolent>
			<warmupTime>1</warmupTime>
			<SecondsToRecharge>10.0</SecondsToRecharge>
			<range>10</range>
			<burstShotCount>1</burstShotCount>
			<ticksBetweenBurstShots>1</ticksBetweenBurstShots>
			<soundCast>Explosion_Stun</soundCast>
			<muzzleFlashScale>20</muzzleFlashScale>
			<isPrimary>false</isPrimary>
			<refundsPointsAfterFailing>true</refundsPointsAfterFailing>
			<AlwaysHits>false</AlwaysHits>
			<AbilityTargetCategory>TargetSelf</AbilityTargetCategory>
			<targetParams>
				<canTargetPawns>false</canTargetPawns>
				<canTargetBuildings>false</canTargetBuildings>
				<canTargetSelf>true</canTargetSelf>
				<canTargetLocations>false</canTargetLocations>
			</targetParams>
		</MainVerb>
	</RWBYRemnant.SemblanceDef>

</Defs>
