<Defs>

	<ThingDef ParentName="ResourceBase">
		<thingClass>RWBYRemnant.ThingWithComps_PickUpAble</thingClass>
		<defName>FireDustCrystal</defName>
		<label>Fire Dust crystal</label>
		<description>A raw Fire Dust crystal. Highly explosive.</description>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Item/Resource/Raw_Dust_Crystal</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(128, 26, 0)</color>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<stackLimit>75</stackLimit>
		<statBases>
			<MaxHitPoints>70</MaxHitPoints>
			<MarketValue>1.2</MarketValue>
			<Mass>0.1</Mass>
			<Flammability>0.6</Flammability>
		</statBases>
		<thingCategories>
			<li>DustCrystals</li>
		</thingCategories>
		<deepCommonality>2</deepCommonality>
		<deepCountPerPortion>15</deepCountPerPortion>
		<deepLumpSizeRange>
			<min>5</min>
			<max>10</max>
		</deepLumpSizeRange>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>1.6</explosiveRadius>
				<explosiveDamageType>Bomb_Fire</explosiveDamageType>
				<explosiveExpandPerStackcount>0.037</explosiveExpandPerStackcount>
				<startWickOnDamageTaken>
					<li>Flame</li>
				</startWickOnDamageTaken>
				<startWickHitPointsPercent>0.9</startWickHitPointsPercent>
				<wickTicks>
					<min>0</min>
					<max>0</max>
				</wickTicks>
			</li>
			<li Class="RWBYRemnant.CompProperties_InjectDustCrystal"/>
			<li Class="RWBYRemnant.CompProperties_WeaponProjectile">
				<AbilityLabel>Throw Fire Dust crystal</AbilityLabel>
				<AbilityDesc>Throw one crystal of Fire Dust</AbilityDesc>
				<AbilityIcon>Things/Item/Resource/Raw_Dust_Crystal</AbilityIcon>
				<AbilityIconColor>(128, 26, 0)</AbilityIconColor>
				<AbilitySound>Pawn_Melee_Punch_Miss</AbilitySound>
				<AbilityProjectile>FireDustCrystal_Projectile</AbilityProjectile>
				<WarmupTime>0.5</WarmupTime>
				<Range>20</Range>
				<targetingParameters>
					<canTargetPawns>true</canTargetPawns>
					<canTargetBuildings>true</canTargetBuildings>
					<canTargetSelf>false</canTargetSelf>
					<canTargetItems>true</canTargetItems>
					<canTargetLocations>true</canTargetLocations>
					<mapObjectTargetsMustBeAutoAttackable>false</mapObjectTargetsMustBeAutoAttackable>					
				</targetingParameters>
				<cannotMiss>true</cannotMiss>
				<usesAmmunition>FireDustCrystal</usesAmmunition>
			</li>
		</comps>
	</ThingDef>

