<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ResourceBase">
		<thingClass>RWBYRemnant.ThingWithComps_PickUpAble</thingClass>
		<defName>FireDustPowder</defName>
		<label>powdered Fire Dust</label>
		<description>Fire Dust in powdered form and stored in a vial. Highly explosive.</description>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Item/Resource/Manufactured_Fire_Dust_Powder</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>75</stackLimit>
		<statBases>
			<MaxHitPoints>70</MaxHitPoints>
			<MarketValue>0.5</MarketValue>
			<Mass>0.01</Mass>
			<Flammability>0.6</Flammability>
		</statBases>
		<intricate>true</intricate>
		<thingCategories>
			<li>DustPowder</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>1.1</explosiveRadius>
				<explosiveDamageType>Bomb_Fire</explosiveDamageType>
				<explosiveExpandPerStackcount>0.037</explosiveExpandPerStackcount>
				<startWickOnDamageTaken>
					<li>Flame</li>
				</startWickOnDamageTaken>
				<startWickHitPointsPercent>0.9</startWickHitPointsPercent>
				<wickTicks>
					<min>0</min>
					<max>0</max>
				</wickTicks>
			</li>
			<li Class="RWBYRemnant.CompProperties_WeaponProjectile">
				<AbilityLabel>Throw Fire Dust</AbilityLabel>
				<AbilityDesc>Throw one vial with Fire Dust</AbilityDesc>
				<AbilityIcon>Things/Item/Resource/Manufactured_Fire_Dust_Powder</AbilityIcon>
				<AbilitySound>Pawn_Melee_Punch_Miss</AbilitySound>
				<AbilityProjectile>FireDustPowder_Projectile</AbilityProjectile>
				<WarmupTime>0.5</WarmupTime>
				<Range>20</Range>
				<targetingParameters>
					<canTargetPawns>true</canTargetPawns>
					<canTargetBuildings>true</canTargetBuildings>
					<canTargetSelf>false</canTargetSelf>
					<canTargetItems>true</canTargetItems>
					<canTargetLocations>true</canTargetLocations>
					<mapObjectTargetsMustBeAutoAttackable>false</mapObjectTargetsMustBeAutoAttackable>					
				</targetingParameters>
				<cannotMiss>true</cannotMiss>
				<usesAmmunition>FireDustPowder</usesAmmunition>
			</li>
		</comps>
	</ThingDef>

