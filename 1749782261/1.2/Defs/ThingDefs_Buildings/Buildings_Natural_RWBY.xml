<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--============================ Resource Dust ===============================-->

	<ThingDef ParentName="RockBase">
		<defName>MineableFireDust</defName>
		<label>raw Fire Dust</label>
		<description>A natural vein of Fire Dust.</description>
		<graphicData>
			<texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(128, 26, 0)</color>
			<colorTwo>(179, 45, 0)</colorTwo>
		</graphicData>
		<statBases>
			<MaxHitPoints>1500</MaxHitPoints>
		</statBases>
		<building>
			<isResourceRock>true</isResourceRock>
			<mineableThing>FireDustCrystal</mineableThing>
			<mineableYield>15</mineableYield>
			<mineableScatterCommonality>0.3</mineableScatterCommonality>
			<mineableScatterLumpSizeRange>6~12</mineableScatterLumpSizeRange>
		</building>
	</ThingDef>

