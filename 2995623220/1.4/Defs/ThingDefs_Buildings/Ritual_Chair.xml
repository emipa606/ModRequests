<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="RitualSeatBase">
    <defName>RitualChair</defName>
    <label>ritual chair</label>
    <description>A chair for participants in rituals to sit on.</description>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>Things/Building/Furniture/DiningChair</texPath>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <fillPercent>0.05</fillPercent>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Beauty>10</Beauty>
      <Flammability>1.0</Flammability>
      <Comfort>0.60</Comfort>
      <Mass>2.5</Mass>
      <StyleDominance>5</StyleDominance>
    </statBases>
    <building>
      <sitIgnoreOrientation>true</sitIgnoreOrientation>
    </building>
    <comps>
    </comps>
  </ThingDef>
  <ThingDef ParentName="RitualSeatBase">
    <defName>RitualArmchair</defName>
    <label>ritual armchair</label>
    <description>An armchair for participants in rituals to sit on.</description>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>Things/Building/Furniture/Armchair</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <fillPercent>0.40</fillPercent>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>60</costStuffCount>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <WorkToBuild>7000</WorkToBuild>
      <Beauty>10</Beauty>
      <Flammability>1.0</Flammability>
      <Comfort>0.80</Comfort>
      <Mass>2.5</Mass>
      <StyleDominance>5</StyleDominance>
    </statBases>
    <building>
      <sitIgnoreOrientation>false</sitIgnoreOrientation>
    </building>
    <comps>
    </comps>
  </ThingDef>
  
</Defs>
