<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Textures Expanded - Variations</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "RitualChair"]/comps</xpath>
			<value>
				<li Class="VanillaFurnitureExpanded.CompProperties_RandomBuildingGraphic">
					<randomGraphics>
						<li>Things/Building/Furniture/DiningChair</li>
						<li>Things/Building/Furniture/Chairs/VFE_DiningChairNoBack</li>
						<li>Things/Building/Furniture/Chairs/VFE_DiningChairOneLeg</li>
						<li>Things/Building/Furniture/Chairs/VFE_DiningChairPattern</li>
						<li>Things/Building/Furniture/Chairs/VFE_DiningChairSolidBack</li>
						<li>Things/Building/Furniture/Chairs/VFE_DiningChairSquareBack</li>
						<li>Things/Building/Furniture/Chairs/VFE_DiningChairSquareBackAlternate</li>
					</randomGraphics>
				</li>
			</value>
		</match>
	</Operation>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Textures Expanded - Variations</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "RitualArmchair"]/comps</xpath>
			<value>
				<li Class="VanillaFurnitureExpanded.CompProperties_RandomBuildingGraphic">
					<randomGraphics>
						<li>Things/Building/Furniture/Armchair</li>
						<li>Things/Building/Furniture/Armchairs/VFE_ArmchairClassy</li>
						<li>Things/Building/Furniture/Armchairs/VFE_ArmchairModern</li>
					</randomGraphics>
				</li>
			</value>
		</match>
	</Operation>
</Patch>