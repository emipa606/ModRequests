  <!-- RACE DEFS -->
  <ThingDef ParentName="BaseCosmicHorrorRaceInit">
    <defName>ROM_Cthulhid</defName>
    <label>cthulhid</label>
    <description>Octopoidal humanoids, cast in in the image of great Cthulhu himself and bound to his will. They make a mockery of the human form, with a tentacled head, scaly body and vestigial bat-like wings. While insignificant in size, in comparison to their master, they stand many times taller than a man. They serve the Great Old Ones will while he remains sleeping.</description>
    <statBases>
      <MoveSpeed>1.5</MoveSpeed>
      <ArmorRating_Blunt>0.9</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.9</ArmorRating_Sharp>
    </statBases>
    <tools>
      <li>
        <label>wings</label>
        <capacities>
          <li>ROM_BluntMonstrous</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>ROM_Wings</linkedBodyPartsGroup>
        <chanceFactor>0.25</chanceFactor>
      </li>
      <li>
        <label>left claw</label>
        <capacities>
          <li>ROM_ScratchMonstrous</li>
        </capacities>
        <power>30</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>ROM_ScratchMonstrous</li>
        </capacities>
        <power>30</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>overwhelming mind</label>
        <capacities>
          <li>ROM_Psychic</li>
        </capacities>
        <power>60</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>ROM_Mind</linkedBodyPartsGroup>
      </li>
      <li>
        <label>maw</label>
        <capacities>
          <li>ToxicBite</li>
        </capacities>
        <power>20</power>
        <cooldownTime>1.55</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.33</chanceFactor>
      </li>
    </tools>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Animal</thinkTreeMain>
      <thinkTreeConstant>AnimalConstant</thinkTreeConstant>
      <body>ROM_CthulhidBody</body>
      <!--
      <leatherColor>(54,125,54)</leatherColor>
      <leatherCommonalityFactor>0.1</leatherCommonalityFactor>
      <leatherLabel>star spawn skin</leatherLabel>
      <leatherStatFactors>
        <ArmorRating_Sharp>1.5</ArmorRating_Sharp>
        <ArmorRating_Blunt>2.0</ArmorRating_Blunt>
        <ArmorRating_Heat>4.0</ArmorRating_Heat>
        <Insulation_Cold>1.8</Insulation_Cold>
        <Insulation_Heat>1.0</Insulation_Heat>
      </leatherStatFactors>
      <leatherMarketValueFactor>3.5</leatherMarketValueFactor>
      <leatherCommonalityFactor>0.01</leatherCommonalityFactor>
	  -->
      <leatherDef>CH_Leather_Cthulhid</leatherDef>
      <baseBodySize>3.0</baseBodySize>
      <baseHealthScale>4.0</baseHealthScale>
      <lifeExpectancy>9999999</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>ROM_Spawn</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>ROM_FullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_ROM_Cthulhid_Wounded</soundWounded>
          <soundDeath>Pawn_ROM_Cthulhid_Death</soundDeath>
          <soundCall>Pawn_ROM_Cthulhid_Call</soundCall>
        </li>
        <li>
          <def>ROM_Ancient</def>
          <minAge>10000</minAge>
        </li>
        <li>
          <def>ROM_Eldritch</def>
          <minAge>1000000</minAge>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>
        <min>5000</min>
        <max>10000</max>
      </soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <butcherProducts>
      <ROM_RawCHFood_CthulhidMeat>60</ROM_RawCHFood_CthulhidMeat>
    </butcherProducts>
    <recipes>
      <li>Euthanize</li>
    </recipes>
    <modExtensions>
      <li Class="CosmicHorror.PawnExtension">
        <invisible>false</invisible>
        <regenRate>0.0125</regenRate>
        <regenInterval>1000</regenInterval>
        <sanityLossRate>0.02</sanityLossRate>
        <painFactor>0.05</painFactor>
      </li>
    </modExtensions>
  </ThingDef>
</Defs>