<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- chancing the description if you have [SYR] Harvest Yield Patch installed -->
<Operation Class="PatchOperationFindMod">
    <mods>
        <li>[SYR] Harvest Yield Patch</li>
    </mods>
    <match Class="PatchOperationReplace">
        <xpath>Defs/InspirationDef[defName="RO_FarmingInspiration"]/beginLetter</xpath>
		<value>
			<beginLetter>[PAWN_pronoun] will have significantly improved planting speed and harvesting yield for the next 8 days.</beginLetter>
		</value>
    </match>
</Operation>
  

</Patch>