<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>21st Century Arsenal (Continued)</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!-- projectiles -->
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="Bullet_Shotgun_21CA"]</xpath>
                    <value>
                        <li Class="ProperShotguns.ShotgunExtension">
                            <pelletCount>6</pelletCount>
                        </li>
                    </value>
				</li>

                <!-- textures -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Bullet_Shotgun_21CA"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>Things/Projectile/Bullet_Small</texPath>
                    </value>
                </li>

                <!-- verbs -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Axi_S_M26MASS_21CA" or defName="Axi_S_VEPR12_21CA"]/verbs/li/verbClass</xpath>
                    <value>
                        <verbClass>ProperShotguns.Verb_ShootShotgun</verbClass>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>