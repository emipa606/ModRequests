<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Kit's Gunpowder Weapons</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!-- projectiles -->
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="KIT_Bullet_Blunderbuss"]</xpath>
                    <value>
                        <li Class="ProperShotguns.ShotgunExtension">
                            <pelletCount>6</pelletCount>
                        </li>
                    </value>
				</li>

                <!-- textures -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="KIT_Bullet_Blunderbuss"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>Things/Projectile/Bullet_Small</texPath>
                    </value>
                </li>

                <!-- verbs -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="KIT_Gun_Blunderbuss"]/verbs/li/verbClass</xpath>
                    <value>
                        <verbClass>ProperShotguns.Verb_ShootShotgun</verbClass>
                    </value>
                </li>
				
            </operations>
        </match>
    </Operation>

</Patch>