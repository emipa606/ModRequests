<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Add links to other things.
This determines what shows up (each <li>) when you click a thing (defName) in the world.
-->

<!-- ChessTable -->
<Operation Class="PatchOperationSequence">
	<success>Always</success>
	<operations>
		<li Class="PatchOperationTest">
			<xpath>*/ThingDef[defName = "ChessTable"]/comps</xpath>
			<success>Invert</success>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>*/ThingDef[defName = "ChessTable"]</xpath>
			<value>
				<comps />
			</value>
		</li>
	</operations>
</Operation>
<Operation Class="PatchOperationSequence">
	<success>Always</success>
	<operations>
		<li Class="PatchOperationTest">
			<xpath>*/ThingDef[defName = "ChessTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]</xpath>
			<success>Invert</success>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>*/ThingDef[defName = "ChessTable"]/comps</xpath>
			<value>
				<li Class="CompProperties_AffectedByFacilities" />
			</value>
		</li>
	</operations>
</Operation>
<Operation Class="PatchOperationSequence">
	<success>Always</success>
	<operations>
		<li Class="PatchOperationTest">
			<xpath>*/ThingDef[defName = "ChessTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
			<success>Invert</success>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>*/ThingDef[defName = "ChessTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]</xpath>
			<value>
				<linkableFacilities />
			</value>
		</li>
	</operations>
</Operation>
<Operation Class="PatchOperationAdd">
	<xpath>*/ThingDef[defName = "ChessTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
	<value>
				<li>DiningChair</li>
				<li>Stool</li>
				<li>Armchair</li>
				<li>PokerTable</li>
				<li>BilliardsTable</li>
	</value>
</Operation>

