<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--========================== Frog ========================-->
	<ThingDef ParentName="AnimalThingBase" ADogSaidBody="LegsTail">
		<defName>Frog</defName>
		<label>frog</label>
		<description>Frog.</description>
		<statBases>
			<MoveSpeed>1.2</MoveSpeed>
			<MarketValue>75</MarketValue>
			<ComfyTemperatureMin>-12</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<FilthRate>0.5</FilthRate>
		</statBases>
		<tools>
			<li>
				<capacities>
				  <li>Bite</li>
				</capacities>
				<power>1.6</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.7</chanceFactor>
			</li>
			<li>
				<label>head</label>
				<capacities>
				  <li>Blunt</li>
				</capacities>
				<power>0.8</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggUnfertilizedDef>EggFrogUnfertilized</eggUnfertilizedDef>
				<eggFertilizedDef>EggFrogFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>3</eggFertilizationCountMax>
				<eggLayIntervalDays>18.5</eggLayIntervalDays>
				<eggCountRange>
					<min>6</min>
					<max>9</max>
				</eggCountRange>
			</li>
		</comps>
		<race>
			<body>QuadrupedAnimalWithPaws</body>
			<herdAnimal>false</herdAnimal>
			<predator>false</predator>
			<petness>0.45</petness>
			<baseBodySize>0.15</baseBodySize>
			<baseHealthScale>0.4</baseHealthScale>
			<baseHungerRate>0.05</baseHungerRate>
			<foodType>VegetarianRoughAnimal</foodType>
			<leatherDef>Leather_Lizard</leatherDef>
			<wildness>0.35</wildness>
			<trainability>None</trainability>
			<lifeExpectancy>9</lifeExpectancy>
			<manhunterOnDamageChance>0.005</manhunterOnDamageChance>
			<manhunterOnTameFailChance>0.0075</manhunterOnTameFailChance>
			<wildBiomes>
				<TropicalRainforest>0.25</TropicalRainforest>
				<TemperateForest>0.3</TemperateForest>
				<BorealForest>0.2</BorealForest>
				<Tundra>0.025</Tundra>
			</wildBiomes>
			<lifeStageAges>
				<li>
				  <def>AnimalBaby</def>
				  <minAge>0</minAge>
				</li>
				<li>
				  <def>AnimalJuvenile</def>
				  <minAge>0.25</minAge>
				</li>
				<li>
				  <def>AnimalAdult</def>
				  <minAge>0.5</minAge>
				  <soundDeath>Pawn_Frog_Wounded</soundDeath>
				  <soundWounded>Pawn_Frog_Wounded</soundWounded>
				  <soundCall>Pawn_Frog_Call</soundCall>
				  <soundAngry>Pawn_Frog_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
		<tradeTags>
			<li>StandardAnimal</li>
		</tradeTags>
	</ThingDef>
	<PawnKindDef ParentName="AnimalKindBase">
		<defName>Frog</defName>
		<label>frog</label>
		<race>Frog</race>
		<combatPower>2</combatPower>
		<ecoSystemWeight>0.4</ecoSystemWeight>
		<lifeStages>
			<li>
				<bodyGraphicData>
				  <texPath>Things/Pawn/Animal/Frog/Young/Frog</texPath>
