					<volume>(0.25, 0.3, 0.25)</volume>
					<offset>(0,0,-0.15)</offset>
				  </shadowData>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
				  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Frog</texPath>
				  <drawSize>0.60</drawSize>
