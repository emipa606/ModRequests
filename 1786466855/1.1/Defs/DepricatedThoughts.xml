<Defs>
    <ThoughtDef>
		<defName>PrisonerMergedThought</defName>
		<durationDays>10</durationDays>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>prisoner merged</label>
				<description>We did mad science on a captive. It feels wrong to make them a monster...</description>
				<baseMoodEffect>-4</baseMoodEffect>

			</li>
		</stages>
    </ThoughtDef>

    <ThoughtDef>
		<defName>ColonistMergedThought</defName>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<durationDays>10</durationDays>
		<stages>
			<li>
				<label>colonist merged</label>
				<description>We did mad science on one of our own, and now they're...horrifying.</description>
				<baseMoodEffect>-8</baseMoodEffect>

			</li>
		</stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>ColonistPermFeralThought</defName>
        <durationDays>10</durationDays>
          <nullifyingTraits>
              <li>Psychopath</li>
          </nullifyingTraits>
        <stages>
          <li>
            <label>colonist permanently feral</label>
            <description>We knew it was coming...but now they can never be human again.</description>
            <baseMoodEffect>-2</baseMoodEffect>
          </li>
        </stages>
      </ThoughtDef>

      <ThoughtDef>
        <defName>ColonistRevertedThought</defName>
        <durationDays>10</durationDays>
        <stages>
          <li>
            <label>colonist reverted</label>
            <description>A colonist is human again, we did a good deed.</description>
            <baseMoodEffect>5</baseMoodEffect>
          </li>
        </stages>
      </ThoughtDef>

      <ThoughtDef>
		<defName>ColonistTransformedThought</defName>
		<durationDays>10</durationDays>
		<stackLimit>4</stackLimit>
		<stages>
			<li>
				<label>transformed colonist</label>
				<description>A colonist was turned into an animal. That's not right...</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>

		</stages>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
	</ThoughtDef>

	<ThoughtDef>
		<defName>PrisonerTransformedThought</defName>
		<durationDays>4</durationDays>
		<stackLimit>2</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>transformed prisoner</label>
				<description>We turned a captive into an animal. I know they're our prisoner, but it seems wrong.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>

		</stages>
	</ThoughtDef>
</Defs>
