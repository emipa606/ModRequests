<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>RimCuisine 1.0</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/HediffDef[defName="EtherBoarSnout"]/comps/li[@Class = "Pawnmorph.Hediffs.CompProperties_TerrainProduction"]/entries</xpath>
					<value>
						<li>
							<terrain>SoilRich</terrain>
							<resource>RawTruffles</resource>
							<mtb>2.4</mtb>
							<amount>10</amount>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/HediffDef[defName="EtherPigSnout"]/comps/li[@Class = "Pawnmorph.Hediffs.CompProperties_TerrainProduction"]/entries</xpath>
					<value>
						<li>
							<terrain>SoilRich</terrain>
							<resource>RawTruffles</resource>
							<mtb>10.4</mtb>
							<amount>10</amount>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>