<Defs>
  <RecipeDef>
		<defName>Make_SlurryFromMutonite</defName>
		<label>make slurry from mutonite</label>
		<description>Break down a hunk of mutonite into a vial of slurry.</description>
		<jobString>Refining slurry from mutonite.</jobString>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<workAmount>2000</workAmount>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Mutanite</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mutanite</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MechaniteSlurry>1</MechaniteSlurry>
		</products>
	</RecipeDef>
	
	<RecipeDef>
		<defName>Make_SlurryFromChaobulbs</defName>
		<label>make slurry from chaobulbs</label>
		<description>Extract the active mechanites from chaobulb seedpods into slurry</description>
		<jobString>Refining slurry from chaobulbs.</jobString>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<workAmount>1000</workAmount>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chaobulb</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Chaobulb</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MechaniteSlurry>1</MechaniteSlurry>
		</products>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<researchPrerequisite>MutagenExtraction</researchPrerequisite>
	</RecipeDef>
	
	<RecipeDef>
		<defName>Make_ComponentsFromSlurry</defName>
