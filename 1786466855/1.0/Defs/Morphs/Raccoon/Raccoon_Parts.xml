<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="RaccoonPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>RaccoonMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="RaccoonPart">
		<defName>EtherRaccoonJaw</defName>
		<label>raccoon snout</label>
		<description>A short, pointed and bandit-masked muzzle has replaced [PAWN_nameDef]'s usual face. The keen nose picks up the smell of rubbish from miles away.</description>
		<mutationTale>GrewMuzzleMisc</mutationTale>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>adapted</label>
				<minSeverity>1</minSeverity>
				<capMods>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>10</power>
						<cooldownTime>2</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
		<parts>
			<li>Jaw</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="RaccoonPart">
		<defName>EtherRaccoonEar</defName>
		<label>procyonine ear</label>
		<description>A short and fuzzy round ear has replaced [PAWN_nameDef]'s normal ear.</description>
		<mutationTale>EarsChangedMisc</mutationTale>
		<parts>
			<li>Ear</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="RaccoonPart">
		<defName>EtherRaccoonTail</defName>
		<label>ringtail</label>
		<description>The cutest ringtail of a raccoon has grown out from [PAWN_nameDef]'s spine, it twitches when it senses rubbish.</description>
		<mutationTale>GrewTail</mutationTale>
		<parts>
			<li>Tail</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>