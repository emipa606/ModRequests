<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Schemas/ThoughtDef.xsd">
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherFurredLimb</defName>
        <stages>
            <li>
                <label>Fur</label>
                <description>People aren't supposed to have fur.</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Fur</label>
                <description>So soft, so warm...</description>
                <visible>true</visible>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>Fur</label>
                <description>It's too hot like this, and I don't like how animal it makes me look!</description>
                <visible>true</visible>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherHoofHand</defName>
        <stages>
            <li>
                <label>Hooves</label>
                <description>Not hooves, what am I meant to do with these?!</description>
                <visible>true</visible>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>Hooves</label>
                <description>Hm. Well, I can't say it was unexpected...</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Hooves</label>
                <description>MY HANDS! Please no!</description>
                <visible>true</visible>
                <baseMoodEffect>-10</baseMoodEffect>
            </li>
            <li>
                <label>Hooves</label>
                <description>One step closer to all fours, this is great!</description>
                <visible>true</visible>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherDigitigradeLeg</defName>
        <stages>
            <li>
                <label>Animal legs</label>
                <description>Are they bent a different way, or is that my heel?</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Animal legs</label>
                <description>I can be so much faster like this! Once I get used to them...</description>
                <visible>true</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Animal legs</label>
                <description>My knee's bending backwards now! What? That's my heel, not my knee...? Even worse!</description>
                <visible>true</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
            <li>
                <label>Animal legs</label>
                <description>And just a bit further, and I won't be able to stand up! How about that?</description>
                <visible>true</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherClovenHoofFoot</defName>
        <stages>
            <li>
                <label>Hooves</label>
                <description>Well, at least I don't need shoes anymore.</description>
                <visible>true</visible>
                <baseMoodEffect>0</baseMoodEffect>
            </li>
            <li>
                <label>Hooves</label>
                <description>No more shoes! Awesome!</description>
                <visible>true</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Hooves</label>
                <description>I can't even sneak away from the humiliation anymore... these things cause a racket wherever I go!</description>
                <visible>true</visible>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherWooly</defName>
        <stages>
            <li>
                <label>Wool</label>
                <description>Everything is so itchy!</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Wool</label>
                <description>It's so soft and warm...</description>
                <visible>true</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Wool</label>
                <description>I really need a shave...</description>
                <visible>true</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>EtherThickFurLimb</defName>
        <stages>
            <li>
                <label>Heavy fur</label>
                <description>It's pretty stuffy under here...</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Heavy fur</label>
                <description>A thick pelt, for soft hugs...</description>
                <visible>true</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Heavy fur</label>
                <description>It's unbearably hot with this hideous pelt!</description>
                <visible>true</visible>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>