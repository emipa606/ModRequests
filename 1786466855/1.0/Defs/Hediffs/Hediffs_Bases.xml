<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Schemas/HediffDef.xsd">
	<HediffDef Abstract="true" Name="MorphParent">
		<hediffClass>Pawnmorph.Hediff_Morph</hediffClass>
		<defaultLabelColor>(179,86,132)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<isBad>false</isBad>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>1</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.1</severityPerDay>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_CheckRace">
				<triggerStage>1</triggerStage> <!-- This is the index of the stage that will trigger the check when the hediff enters it -->
			</li> 
			<li Class="HediffCompProperties_Immunizable"/>
			<li Class="Pawnmorph.Hediffs.CompProps_TfStageConfigChecker"/> <!-- This comp is just here to check for errors in transformation stages. -->
		</comps>
	</HediffDef>

	<!-- This is going to be used for the full morph hediffs given out by the injectors. -->
	<HediffDef Abstract="true" ParentName="MorphParent" Name="AspectedMorphParent">
		<modExtensions>
			<li Class="Pawnmorph.DefExtensions.MutagenExtension">
				<mutagen>AspectGivingMutagen</mutagen>
			</li>
		</modExtensions>
	</HediffDef>

	<HediffDef Abstract="true" ParentName="AspectedMorphParent" Name="NewAspectedMorphParent">
		<hediffClass>Pawnmorph.Hediffs.MorphTf</hediffClass>
		<defaultLabelColor>(77,68,179)</defaultLabelColor>
	</HediffDef>
	
    <HediffDef Abstract="true" ParentName="MorphParent" Name="PartialMorphParent">
		<comps>
			<li Class="Pawnmorph.HediffCompProperties_Single" />
		</comps>
	</HediffDef>

	<HediffDef Abstract="true" ParentName="PartialMorphParent" Name="NewPartialMorphParent">
		<hediffClass>Pawnmorph.Hediffs.MorphTf</hediffClass>
		<defaultLabelColor>(77,68,179)</defaultLabelColor>
	</HediffDef>
	
    <HediffDef Abstract="true" ParentName="NewAspectedMorphParent" Name="NewPartialAspectedMorphParent">
		<comps>
			<li Class="Pawnmorph.HediffCompProperties_Single" />
		</comps>
	</HediffDef>

	<!-- Specifically for herbaviours. -->
	<HediffDef Abstract="true" ParentName="AspectedMorphParent" Name="HerbavourMorphTfBase">
		<modExtensions>
			<li Class="Pawnmorph.DefExtensions.AspectGiverExtension">
				<aspectGivers>
					<li Class="Pawnmorph.Aspects.SkillBasedGiver">
						<aspect>PlantAffinity</aspect>
						<skillDef>Plants</skillDef>
						<skillThreshold>5</skillThreshold> <!-- The pawn must have the Plants skill above 5 to get this. -->
						<chance>0.07</chance>
					</li>
				</aspectGivers>
			</li>
		</modExtensions>
	</HediffDef>

	<HediffDef Abstract="true" ParentName="HerbavourMorphTfBase" Name="NewHerbavourMorphTfBase">
		<hediffClass>Pawnmorph.Hediffs.MorphTf</hediffClass>
		<defaultLabelColor>(77,68,179)</defaultLabelColor>
	</HediffDef>
</Defs>