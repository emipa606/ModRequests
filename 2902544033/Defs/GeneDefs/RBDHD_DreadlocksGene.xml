<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--========================== Dreadlocks Only Gene ==========================-->
  <!-- Feel free to use this gene in your own xenotype mods. All hairtyles usable by this gene must have the 'Dreadlocks' StyleTag.-->
  
  <GeneDef>
    <defName>Hair_DreadlocksOnly</defName>
    <label>dreadlocks</label>
    <labelShortAdj>dreadlocks</labelShortAdj>
    <description>Carriers of this gene have dreadlocks.</description>
    <iconPath>UI/GeneIcons/RBDHD_DreadlocksOnly</iconPath>
    <displayOrderInCategory>59</displayOrderInCategory>
    <hairTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>Dreadlocks</li>
      </tags>
    </hairTagFilter>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>dread</symbol></li>
        <li><symbol>loc</symbol></li>
        <li><symbol>coil</symbol></li>
        <li><symbol>braid</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>lock</symbol></li>
        <li><symbol>loc</symbol></li>
        <li><symbol>tie</symbol></li>
      </suffixSymbols>
    </symbolPack>
	<biostatCpx>0</biostatCpx>
    <displayCategory>Cosmetic</displayCategory>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <exclusionTags>
      <li>HairStyle</li>
    </exclusionTags>
  </GeneDef>
  
  </Defs>