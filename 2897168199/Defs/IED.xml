<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="TrapIEDBase">
		<defName>TrapIED_HighExplosiveProximity</defName>
		<label>proximity IED trap</label>
		<description>A pair of high-explosive shells connected to a proximity sensor which detonates when hostile entities are detected. Since it is hidden in the surrounding terrain, it cannot be placed adjacent to other traps. Animals can sense these when calm.</description>
		<uiIconOffset>(0,0.05)</uiIconOffset>
		<graphicData>
			<texPath>Things/Building/ProxMineVanilla</texPath>
		</graphicData>
		<costList>
			<Steel>10</Steel>
			<Shell_HighExplosive>2</Shell_HighExplosive>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="BillDoorsFramework.CompProperties_ProximityExplosive">
				<explosiveDamageType>Bomb_ADM</explosiveDamageType>
				<damageAmountBase>270</damageAmountBase>
				<explosiveRadius>4.5</explosiveRadius>
				<wildAnimalSpringChance>0</wildAnimalSpringChance>
				<colonistSpringChance>0</colonistSpringChance>
				<selfExplodeChance>0</selfExplodeChance>
				<minSelfExplodeTick>259200</minSelfExplodeTick>
				<maxSelfExplodeTick>1036800</maxSelfExplodeTick>
				<disableByEMP>true</disableByEMP>
				<EMPstunTick>6000</EMPstunTick>
				<disarmEnabled>false</disarmEnabled>
				<applyDamageToExplosionCellsNeighbors>false</applyDamageToExplosionCellsNeighbors>
				<startWickOnDamageTaken>
					<li MayRequire="ceteam.combatextended">PrometheumFlame</li>
					<li>Flame</li>
					<li>Bullet</li>
					<li>Arrow</li>
					<li>ArrowHighVelocity</li>
				</startWickOnDamageTaken>
				<wickTicks>
					<min>5</min>
					<max>30</max>
				</wickTicks>
				<detectionRadius>4</detectionRadius>
			</li>
			<li Class="CombatExtended.CompProperties_Fragments" MayRequire="ceteam.combatextended">
				<fragments>
					<Fragment_Large>16</Fragment_Large>
					<Fragment_Small>100</Fragment_Small>
				</fragments>
			</li>
		</comps>
		<specialDisplayRadius>4.5</specialDisplayRadius>
	</ThingDef>
</Defs>