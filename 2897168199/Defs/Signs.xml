<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Abstract="True" Name="BDRGsignBase" ParentName="BuildingBase">
		<label>mine field sign</label>
		<description>A warning sign indicating the presense of an ADM field.</description>
		<canOverlapZones>true</canOverlapZones>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>42</pathCost>
		<rotatable>false</rotatable>
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<building>
			<expandHomeArea>false</expandHomeArea>
			<isInert>true</isInert>
		</building>
		<designationCategory>Furniture</designationCategory>
	</ThingDef>

	<ThingDef ParentName="BDRGsignBase">
		<defName>BDRG_SignA</defName>
		<graphicData>
			<texPath>Things/Building/MineFieldSign_a</texPath>
			<drawSize>(1,1)</drawSize>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.1, 1, 0.1)</volume>
				<offset>(0,0,-0.4)</offset>
			</shadowData>
		</graphicData>
		<size>(1,1)</size>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<costList>
			<Steel>5</Steel>
		</costList>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="BDRGsignBase">
		<defName>BDRG_SignB</defName>
		<graphicData>
			<texPath>Things/Building/MineFieldSign_b</texPath>
			<drawSize>(2,2)</drawSize>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(1.3, 1, 0.1)</volume>
				<offset>(0,0,-0.4)</offset>
			</shadowData>
		</graphicData>
		<size>(2,1)</size>
		<fillPercent>0.8</fillPercent>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<costList>
			<Steel>15</Steel>
		</costList>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="BDRGsignBase">
		<defName>BDRG_SignC</defName>
		<graphicData>
			<texPath>Things/Building/MineFieldSign_c</texPath>
			<drawSize>(1,1)</drawSize>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.1, 1, 0.1)</volume>
				<offset>(0,0,-0.4)</offset>
			</shadowData>
		</graphicData>
		<size>(1,1)</size>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<costList>
			<WoodLog>5</WoodLog>
		</costList>
	</ThingDef>

	<ThingDef ParentName="BDRGsignBase">
		<defName>BDRG_SignD</defName>
		<description>A holographic warning sign indicating the presense of an ADM field.</description>
		<graphicData>
			<texPath>Things/Building/MineFieldSign_d</texPath>
			<drawSize>(2.2,2.2)</drawSize>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>Transparent</shaderType>
			<drawOffset>(0,0,0.5)</drawOffset>
			<shadowData>
				<volume>(1.8, 0.2, 0.66)</volume>
				<offset>(0,0,-0.15)</offset>
			</shadowData>
		</graphicData>
		<size>(2,1)</size>
		<fillPercent>0.4</fillPercent>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<costList>
			<Steel>20</Steel>
			<Uranium>10</Uranium>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<researchPrerequisites>
			<li>Fabrication</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>