<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseGrenadeEquipment">
		<defName>Weapon_ThrownADM</defName>
		<equipmentType>Primary</equipmentType>
		<label>detached ADM</label>
		<description>An aerial deployed mine independent from its LGIS carrier, either removed from one or crafted independently. Can be thrown like a grenade and leaves a land mine on spot.</description>
		<graphicData>
			<texPath>Things/Ammo/HandGrenades/ADM</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>(0.4,0.4)</drawSize>
		</graphicData>
		<soundInteract>Interact_Grenade</soundInteract>
		<techLevel>Spacer</techLevel>
		<stackLimit>25</stackLimit>
		<statBases>
			<Mass>0.2</Mass>
			<Bulk>0.92</Bulk>
			<SightsEfficiency>0.65</SightsEfficiency>
			<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>CE_AI_AOE</li>
			<li>CE_OneHandedWeapon</li>
		</weaponTags>
		<thingCategories>
			<li>Grenades</li>
		</thingCategories>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<label>throw ADM</label>
				<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<range>10.0</range>
				<warmupTime>1.8</warmupTime>
				<noiseRadius>4</noiseRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>ThrowGrenade</soundCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>Projectile_AerialDeployedMine</defaultProjectile>
				<onlyManualCast>true</onlyManualCast>
				<ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
			</li>
		</verbs>
		<detonateProjectile>Proj_GrenadeFrag</detonateProjectile>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawSize>0.4,0.4</DrawSize>
				<DrawOffset>0.0,0.0</DrawOffset>
			</li>
		</modExtensions>
		<comps>
			<li Class="BillDoorsFramework.CompProperties_ShowConcept">
				<concepts>
					<li>BDGW_Mines</li>
				</concepts>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="BaseGrenadeProjectile">
		<defName>Projectile_AerialDeployedMine</defName>
		<label>aerial deployed mine</label>
		<graphicData>
			<texPath>Things/Projectile/ADM_projectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.4,0.4)</drawSize>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Blunt</damageDef>
			<damageAmountBase>5</damageAmountBase>
			<armorPenetrationBlunt>20</armorPenetrationBlunt>
			<speed>15</speed>
			<gravityFactor>10</gravityFactor>
		</projectile>
		<comps>
			<li Class="BillDoorsFramework.CompProperties_SpawnThingOnDestroy">
				<compClass>BillDoorsFramework.CompSpawnThingOnDestroyCE</compClass>
				<def>Trap_AerialDeployedMine</def>
			</li>
		</comps>
	</ThingDef>

	<RecipeDef ParentName="GrenadeRecipeBase">
		<defName>MakeDetachedADM</defName>
		<label>make aerial deployed mine x10</label>
		<description>Craft 10 aerial deployed mines independent from their launching vehicles.</description>
		<jobString>Making aerial deployed mines.</jobString>
		<workAmount>4400</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>14</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Weapon_ThrownADM>10</Weapon_ThrownADM>
		</products>
		<researchPrerequisites>
			<li>IEDs</li>
		</researchPrerequisites>
	</RecipeDef>

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeADMdistributor</defName>
		<label>make ADM distributor from ADM</label>
		<description>Craft ADM distributor with pre-made mines.</description>
		<jobString>Making ADM distributor.</jobString>
		<workAmount>1000</workAmount>
		<recipeUsers>
			<li>TableMachining</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_ThrownADM</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>ComponentIndustrial</li>
				<li>Weapon_ThrownADM</li>
			</thingDefs>
		</fixedIngredientFilter>
		<researchPrerequisites>
			<li>IEDs</li>
		</researchPrerequisites>
		<products>
			<BDLM_ADMdistributor>1</BDLM_ADMdistributor>
		</products>
	</RecipeDef>
</Defs>