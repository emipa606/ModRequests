<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="81mmMortarShellBaseCraftableBase">
		<defName>BDLM_81mmMinelayerShell</defName>
		<label>81mm mortar shell (Minelayer)</label>
		<graphicData>
			<texPath>Things/Ammo/Mortar/Minelayer</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>37.03</MarketValue>
			<Mass>4.1</Mass>
			<Bulk>10.01</Bulk>
		</statBases>
		<ammoClass>GrenadeMinelayer</ammoClass>
		<detonateProjectile>Bullet_81mmMortarShell_HE</detonateProjectile>
	</ThingDef>

	<ThingDef ParentName="Base81mmMortarShell">
		<defName>Bullet_81mmMortarShell_Minelayer</defName>
		<label>81mm mortar shell (Minelayer)</label>
		<thingClass>BillDoorsFramework.Projectile_HeightFuseCE</thingClass>
		<graphicData>
			<texPath>Things/Projectile/MinelayerMortar_projectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Smoke</damageDef>
			<armorPenetrationSharp>0</armorPenetrationSharp>
			<armorPenetrationBlunt>0</armorPenetrationBlunt>
			<soundExplode>InfernoCannon_Fire</soundExplode>
			<aimHeightOffset>10</aimHeightOffset>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_AerialDeployedMineFast>6</Fragment_AerialDeployedMineFast>
					<Fragment_AerialDeployedMineCasingA>1</Fragment_AerialDeployedMineCasingA>
					<Fragment_AerialDeployedMineCasingB>1</Fragment_AerialDeployedMineCasingB>
				</fragments>
				<fragAngleRange>-60~-10</fragAngleRange>
				<fragXZAngleRange>-90~90</fragXZAngleRange>
			</li>
		</comps>
	</ThingDef>

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeBDLM_81mmMinelayerShell</defName>
		<label>make 81mm minelayer mortar shells x5</label>
		<description>Craft 5 81mm minelayer mortar shells.</description>
		<jobString>Making 81mm minelayer mortar shells.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>54</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>7</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<BDLM_81mmMinelayerShell>5</BDLM_81mmMinelayerShell>
		</products>
		<researchPrerequisites>
			<li>IEDs</li>
		</researchPrerequisites>
		<workAmount>15500</workAmount>
	</RecipeDef>

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeBDLM_81mmMinelayerShellFromADM</defName>
		<label>make 81mm minelayer mortar shells x5 from ADM</label>
		<description>Craft 5 81mm minelayer mortar shells with pre-made mines.</description>
		<jobString>Making 81mm minelayer mortar shells.</jobString>
		<recipeUsers>
			<li>TableMachining</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_ThrownADM</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
				<li>Weapon_ThrownADM</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<BDLM_81mmMinelayerShell>5</BDLM_81mmMinelayerShell>
		</products>
		<workAmount>1550</workAmount>
	</RecipeDef>
</Defs>
