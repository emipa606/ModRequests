<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="105mmHowitzerShellBase">
		<defName>Ammo_105mmHowitzerShell_Minelayer</defName>
		<label>105mm Howitzer shell (Minelayer)</label>
		<graphicData>
			<texPath>Things/Ammo/Cannon/Howitzer/Minelayer</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>GrenadeMinelayer</ammoClass>
		<detonateProjectile>Bullet_105mmHowitzerShell_HE</detonateProjectile>
	</ThingDef>

	<ThingDef ParentName="Base105mmHowitzerShell">
		<defName>Bullet_105mmHowitzerShell_Minelayer</defName>
		<label>105mm Howitzer shell (Minelayer)</label>
		<thingClass>BillDoorsFramework.Projectile_HeightFuseCE</thingClass>
		<graphicData>
			<texPath>Things/Projectile/MinelayerHowizter_projectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Smoke</damageDef>
			<armorPenetrationSharp>0</armorPenetrationSharp>
			<armorPenetrationBlunt>0</armorPenetrationBlunt>
			<soundExplode>InfernoCannon_Fire</soundExplode>
			<aimHeightOffset>10</aimHeightOffset>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_AerialDeployedMineFast>15</Fragment_AerialDeployedMineFast>
					<Fragment_AerialDeployedMineCasingA>1</Fragment_AerialDeployedMineCasingA>
					<Fragment_AerialDeployedMineCasingB>1</Fragment_AerialDeployedMineCasingB>
				</fragments>
				<fragAngleRange>-60~-10</fragAngleRange>
				<fragXZAngleRange>-90~90</fragXZAngleRange>
			</li>
		</comps>
	</ThingDef>

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeAmmo_105mmHowitzerShell_Minelayer</defName>
		<label>make 105mm minelayer Howitzer shells x2</label>
		<description>Craft 2 105mm minelayer Howitzer shells.</description>
		<jobString>Making 105mm minelayer Howitzer shells.</jobString>
		<workAmount>12000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>7</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>16</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>ComponentIndustrial</li>
				<li>FSX</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_105mmHowitzerShell_Minelayer>2</Ammo_105mmHowitzerShell_Minelayer>
		</products>
		<researchPrerequisites>
			<li>IEDs</li>
		</researchPrerequisites>
	</RecipeDef>

