<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<CombatExtended.AmmoCategoryDef>
		<defName>GrenadeMinelayer</defName>
		<label>mine layer</label>
		<labelShort>mine</labelShort>
		<description>Advanced shell designed for remote destribution of land mines.</description>
	</CombatExtended.AmmoCategoryDef>

	<ThingDef ParentName="BaseFragment" Name="BaseADMfrag">
		<defName>Fragment_AerialDeployedMine</defName>
		<label>aerial deployed mine</label>
		<thingClass>BillDoorsFramework.ProjectileCE_FromAirExplode</thingClass>
		<graphicData>
			<texPath>Things/Projectile/ADM_projectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.4,0.4)</drawSize>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Blunt</damageDef>
			<damageAmountBase>5</damageAmountBase>
			<armorPenetrationBlunt>20</armorPenetrationBlunt>
			<speed>10</speed>
			<alwaysFreeIntercept>true</alwaysFreeIntercept>
			<gravityFactor>10</gravityFactor>
		</projectile>
		<comps>
			<li Class="BillDoorsFramework.CompProperties_SpawnThingOnDestroy">
				<compClass>BillDoorsFramework.CompSpawnThingOnDestroyCE</compClass>
				<def>Trap_AerialDeployedMine</def>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="BaseADMfrag">
		<defName>Fragment_AerialDeployedMineFast</defName>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>20</speed>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseFragment">
		<defName>Fragment_AerialDeployedMineCasingA</defName>
		<label>ADM carrier casing</label>
		<thingClass>BillDoorsFramework.ProjectileCE_FromAirExplode</thingClass>
		<graphicData>
			<texPath>Things/Projectile/ADM_carrier_casingLeft</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Blunt</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<armorPenetrationBlunt>20</armorPenetrationBlunt>
			<speed>15</speed>
			<alwaysFreeIntercept>true</alwaysFreeIntercept>
			<gravityFactor>10</gravityFactor>
			<preExplosionSpawnThingDef>Filth_ADScarrierCasingA</preExplosionSpawnThingDef>
			<preExplosionSpawnChance>1</preExplosionSpawnChance>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseFragment">
		<defName>Fragment_AerialDeployedMineCasingB</defName>
		<label>ADM carrier casing</label>
		<thingClass>BillDoorsFramework.ProjectileCE_FromAirExplode</thingClass>
		<graphicData>
			<texPath>Things/Projectile/ADM_carrier_casingRight</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Blunt</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<armorPenetrationBlunt>20</armorPenetrationBlunt>
			<speed>15</speed>
			<alwaysFreeIntercept>true</alwaysFreeIntercept>
			<gravityFactor>10</gravityFactor>
			<preExplosionSpawnThingDef>Filth_ADScarrierCasingB</preExplosionSpawnThingDef>
			<preExplosionSpawnChance>1</preExplosionSpawnChance>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseFilth">
		<defName>Filth_ADScarrierCasingA</defName>
		<label>ADM carrier casing</label>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Beauty>-12</Beauty>
			<MaxHitPoints>50</MaxHitPoints>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<onGroundRandomRotateAngle>180</onGroundRandomRotateAngle>
			<texPath>Things/Projectile/ADM_carrier_casingLeft</texPath>
		</graphicData>
		<filth>
			<ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
			<disappearsInDays>5~10</disappearsInDays>
			<cleaningWorkToReduceThickness>35</cleaningWorkToReduceThickness>
			<canFilthAttach>false</canFilthAttach>
		</filth>
	</ThingDef>

	<ThingDef ParentName="BaseFilth">
		<defName>Filth_ADScarrierCasingB</defName>
		<label>ADM carrier casing</label>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Beauty>-12</Beauty>
			<MaxHitPoints>50</MaxHitPoints>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<onGroundRandomRotateAngle>180</onGroundRandomRotateAngle>
			<texPath>Things/Projectile/ADM_carrier_casingRight</texPath>
		</graphicData>
		<filth>
			<ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
			<disappearsInDays>5~10</disappearsInDays>
			<cleaningWorkToReduceThickness>35</cleaningWorkToReduceThickness>
			<canFilthAttach>false</canFilthAttach>
		</filth>
	</ThingDef>

	<ThingDef ParentName="BaseFragment">
		<defName>Fragment_ADMEFP</defName>
		<label>explosive formed penetrator</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>60</damageAmountBase>
			<armorPenetrationSharp>18</armorPenetrationSharp>
			<armorPenetrationBlunt>634</armorPenetrationBlunt>
			<speed>150</speed>
			<alwaysFreeIntercept>true</alwaysFreeIntercept>
			<gravityFactor>10</gravityFactor>
		</projectile>
	</ThingDef>
</Defs>