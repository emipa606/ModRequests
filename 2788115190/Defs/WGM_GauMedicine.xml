<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ======================= GauMedicine ========================== -->

    <ThingDef ParentName="MedicineBase">
    <defName>MedicineGauranlen</defName>
    <label>gaumedicine</label>
    <description>A pack of herbal concoctions derived mostly from the healroot plant, but with the inclusion of gaubric for bandages and ambrosia in various concentrations to serve as local or general anaesthetic as well as antiseptic.</description>
    <graphicData>
      <texPath>WGM_GauMedicine</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <MarketValue>14</MarketValue>
      <Mass>0.35</Mass>
      <Flammability>1.3</Flammability>
      <MedicalPotency>0.85</MedicalPotency>
      <MedicalQualityMax>0.90</MedicalQualityMax>
      <DeteriorationRate>4</DeteriorationRate>
      <WorkToMake>600</WorkToMake>
    </statBases>
    <costList>
      <MedicineHerbal>1</MedicineHerbal>
      <Ambrosia>2</Ambrosia>
      <VDE_Gaubric>3</VDE_Gaubric>
    </costList>
    <tickerType>Rare</tickerType>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>180</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <recipeMaker>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
        <li>DrugLab</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>DrugProduction</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
        <Intellectual>4</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <allowedArchonexusCount>15</allowedArchonexusCount>
    <tradeTags>
      <li>GauranlenMedicine</li>
    </tradeTags>
  </ThingDef>

</Defs>