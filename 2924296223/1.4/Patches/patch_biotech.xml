<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>Biotech</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName = "Crib"]/building/bed_maxBodySize</xpath>
                    <value>
                        <bed_maxBodySize>0.75</bed_maxBodySize>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "BabySleepingSpot"]/building</xpath>
                    <value>
                        <building>
                            <bed_showSleeperBody>False</bed_showSleeperBody>
                        </building>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "BabySleepingSpot"]/label</xpath>
                    <value>
                        <label>small sleeping spot</label>
                    </value>
                </li>
            </operations>
	    </match>
    </Operation>

</Patch>