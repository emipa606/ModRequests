<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>Save Our Ship 2</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "SpaceCrib"]/building/bed_maxBodySize</xpath>
                    <value>
                        <bed_maxBodySize>0.75</bed_maxBodySize>
                    </value>
                </li>
            </operations>
	    </match>
    </Operation>
</Patch>