<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/StatDef[defName = "Beauty"]/parts</xpath>
		<value>
			<li Class="BillDoorsLootsAndShelves.StatPart_DisplayShelf">
				<priority>0</priority>
				<nullifyNegativeStat>true</nullifyNegativeStat>
				<statFromWealthMult>0.05</statFromWealthMult>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnRenderTreeDef[defName = "Humanlike"]/root/children/li[tagDef="Head"]/children</xpath>
		<value>
			<li>
				<debugLabel>BackHair</debugLabel>
				<nodeClass>BillDoorsFramework.PawnRenderNode_BackHair</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<colorType>Hair</colorType>
				<skipFlag>Hair</skipFlag>
				<baseLayer>-1</baseLayer>
			</li>
		</value>
	</Operation>

	<Operation Class="BillDoorsFramework.PatchOperationAddSafe">
		<xpath>Defs/PawnRenderTreeDef[defName = "Humanlike"]/root/children/li[tagDef="Head"]/children/li[nodeClass="PawnRenderNode_Hair"]</xpath>
		<testName>subworkerClasses</testName>
		<value>
			<li>BillDoorsFramework.PawnRenderNodeSubWorker_HairDrawSize</li>
		</value>
	</Operation>
</Patch>