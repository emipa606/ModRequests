  <!-- ================================= Bolt Actions ==================================== -->

  
          <!-- ================================= G29 ==================================== -->

  <ThingDef ParentName="RNBaseBoltAction">
    <defName>RNGun_HaenelRS9Sn</defName>
    <label>G29</label>
    <description>The precision rifle RS9 (Rifle System 9) is the most powerful variant of the Haenel RS-family. Bundeswehr designation "G29". 
	
The rifle is used from Special Forces of the police and is fitted with the calibre .338 Lapua Magnum. The rifle has been introduced to the German army as sniper rifle G29 on average ranges.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/M_Bolt_Action/G29</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
	<equippedAngleOffset>40</equippedAngleOffset>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.87</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>2.15</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RNBullet_338Lapua_Sniper</defaultProjectile>
        <warmupTime>3</warmupTime>
        <range>45.9</range>
        <soundCast>RNShot_G29Sn</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags Inherit="False">
      <!--<li>SniperRifle</li>-->
	  <li>RN_G29</li>
    </weaponTags>
  </ThingDef>
  
