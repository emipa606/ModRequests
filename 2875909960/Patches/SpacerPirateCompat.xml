<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--Demonstration Patch-->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Bill Doors' Glitterworld Weapon Pack: 3HST limited corporation</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="Gun_3HST_Scatter_Railgun"]</xpath>
					<value>
						<li Class="BDsWeaponJamming.DefModExtension_Jamming">
							<jamChancePostfix>0.1</jamChancePostfix>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="Gun_3HST_Scatter_Railgun_Heavy"]</xpath>
					<value>
						<li Class="BDsWeaponJamming.DefModExtension_Jamming">
							<jamChancePostfix>0.05</jamChancePostfix>
							<AlwaysReloadWhenJam>true</AlwaysReloadWhenJam>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="Gun_3HST_Scatter_Railgun_Pump"]</xpath>
					<value>
						<li Class="BDsWeaponJamming.DefModExtension_Jamming">
							<jamChancePostfix>0.1</jamChancePostfix>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>