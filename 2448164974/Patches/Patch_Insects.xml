<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- MegaScarab Start -->
  
  <Operation Class="PatchOperationRemove">
	<success>Always</success>
    <xpath>/Defs/ThingDef[@Name = "Megascarab"]/race/gestationPeriodDays</xpath>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "Megascarab"]/race/baseBodySize</xpath>
	<value>
		<baseBodySize>0.4</baseBodySize>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "Megascarab"]/race/baseHealthScale</xpath>
	<value>
		<baseHealthScale>1.7</baseHealthScale>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "Megascarab"]/race/wildness</xpath>
	<value>
		<wildness>0.80</wildness>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "Megascarab"]/race/trainability</xpath>
	<value>
		<trainability>Advanced</trainability>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "Megascarab"]/race</xpath>
	<value>
		<nameOnTameChance>1</nameOnTameChance>
		<manhunterOnDamageChance>0.35</manhunterOnDamageChance>
		<manhunterOnTameFailChance>0.20</manhunterOnTameFailChance>
		<mateMtbHours>8</mateMtbHours>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "Megascarab"]</xpath>
	<value>
		<comps>
		<li Class="CompProperties_EggLayer">
			<eggFertilizedDef>EggMegascarabFertilized</eggFertilizedDef>
			<eggFertilizationCountMax>1</eggFertilizationCountMax>
			<eggLayIntervalDays>6</eggLayIntervalDays>
			<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
			<eggCountRange>1~3</eggCountRange>
		</li>
		</comps>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/PawnKindDef[defName = "Megascarab"]</xpath>
	<value>
		<wildGroupSize>3~9</wildGroupSize>
	</value>
  </Operation>
  
    <!-- MegaScarab End -->
	
	<!-- Spelopede Start -->
  
  <Operation Class="PatchOperationRemove">
	<success>Always</success>
    <xpath>/Defs/ThingDef[@Name = "Spelopede"]/race/gestationPeriodDays</xpath>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "Spelopede"]/race/wildness</xpath>
	<value>
		<wildness>0.80</wildness>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "Spelopede"]/race</xpath>
	<value>
		<nameOnTameChance>1</nameOnTameChance>
		<manhunterOnDamageChance>0.35</manhunterOnDamageChance>
		<manhunterOnTameFailChance>0.20</manhunterOnTameFailChance>
		<packAnimal>true</packAnimal>
		<mateMtbHours>8</mateMtbHours>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "Spelopede"]</xpath>
	<value>
		<comps>
		<li Class="CompProperties_EggLayer">
			<eggFertilizedDef>EggSpelopedeFertilized</eggFertilizedDef>
			<eggFertilizationCountMax>1</eggFertilizationCountMax>
			<eggLayIntervalDays>8</eggLayIntervalDays>
			<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
			<eggCountRange>1~3</eggCountRange>
		</li>
		</comps>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/PawnKindDef[defName = "Spelopede"]</xpath>
	<value>
		<wildGroupSize>3~9</wildGroupSize>
	</value>
  </Operation>
	
	<!-- Spelopede End -->
	
	<!-- MegaSpider Start -->
  
  <Operation Class="PatchOperationRemove">
	<success>Always</success>
    <xpath>/Defs/ThingDef[@Name = "Megaspider"]/race/gestationPeriodDays</xpath>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName = "Megaspider"]/race/wildness</xpath>
	<value>
		<wildness>0.80</wildness>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "Megaspider"]/race</xpath>
	<value>
		<nameOnTameChance>1</nameOnTameChance>
		<manhunterOnDamageChance>0.35</manhunterOnDamageChance>
		<manhunterOnTameFailChance>0.20</manhunterOnTameFailChance>
		<packAnimal>true</packAnimal>
		<mateMtbHours>8</mateMtbHours>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "Megaspider"]</xpath>
	<value>
		<comps>
		<li Class="CompProperties_Milkable">
			<milkDef>InsectJelly</milkDef>
			<milkIntervalDays>2</milkIntervalDays>
			<milkAmount>9</milkAmount>
			<milkFemaleOnly>false</milkFemaleOnly>
		</li>
		<li Class="CompProperties_EggLayer">
			<eggFertilizedDef>EggMegaspiderFertilized</eggFertilizedDef>
			<eggFertilizationCountMax>1</eggFertilizationCountMax>
			<eggLayIntervalDays>10</eggLayIntervalDays>
			<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
			<eggCountRange>1~3</eggCountRange>
		</li>
		</comps>
	</value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/PawnKindDef[defName = "Megaspider"]</xpath>
	<value>
		<wildGroupSize>3~9</wildGroupSize>
	</value>
  </Operation>
	
	<!-- MegaSpider End -->
  
</Patch>