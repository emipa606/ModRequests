<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ PSh97	__________-->

 	<!--PSh97--> 
  
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>ODZ_METRO2033_PSh97Helmet</defName>
    <label>PSh97 helmet</label>
    <description>A russian riot helmet worn by police and OMON units, not designed to block bullets, but pretty decent at blocking blunt objects.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/Headwear/Helmets/PSh97/PSh97_Bare</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <statBases>
      <WorkToMake>3200</WorkToMake>
      <MaxHitPoints>95</MaxHitPoints>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.45</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.30</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>  	  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Helmets/PSh97/PSh97_Bare</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>OMON</li>
		<li>HANSA</li>	  
		<li>Lowtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>  
  

</Defs>