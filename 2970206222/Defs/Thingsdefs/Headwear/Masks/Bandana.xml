<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ bandana __________-->
  
  
  	<!-- bandana -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_FaceBandana</defName>
    <label>face bandana</label>
    <description>A bandana that covers the face, favored by bandits.</description>
    <graphicData>
      <texPath>Things/Headwear/Masks/Bandana/HalfMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
			<WorkToMake>500</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.05</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>  
      <bodyPartGroups>
        <li>Teeth</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Masks/Bandana/HalfMask</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
	  <coversHeadMiddle>true</coversHeadMiddle>	  
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
		<li>Bandit</li>	  
		<li>Lowtier</li>
		<li>Midtier</li>
		<li>Hightier</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef> 
  
</Defs>