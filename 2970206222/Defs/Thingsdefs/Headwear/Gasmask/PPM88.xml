<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ PPM88 __________-->
  
  
  	<!-- PPM88 -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_PPM88Gasmask</defName>
    <label>PPM-88 mask</label>
    <description>A common and modern civilian grade gasmask.</description>
    <techLevel>Industrial</techLevel>	
    <graphicData>
      <texPath>Things/Headwear/Gasmasks/PPM88/PPM88</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
	  <li>Leathery</li>
    </stuffCategories>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Steel>8</Steel>
		</costList>		
    <statBases>
			<WorkToMake>3000</WorkToMake>
			<MaxHitPoints>75</MaxHitPoints>
			<Mass>0.70</Mass>
			<StuffEffectMultiplierArmor>0.09</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ToxicEnvironmentResistance>0.65</ToxicEnvironmentResistance>  
    </equippedStatOffsets>	
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
      <immuneToToxGasExposure>true</immuneToToxGasExposure>	
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Gasmasks/PPM88/PPM88</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
	  <li>Civilian</li>	  
	  <li>Lowtier</li>	
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
</Defs>