<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ Baseball Cap __________-->
  
  
  	<!-- Baseball cap -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_Baseballcap</defName>
    <label>black baseball cap</label>
    <description>A black baseball cap.</description>
    <graphicData>
      <texPath>Things/Headwear/Hats/BaseballCap/BaseballCap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>20</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
			<WorkToMake>1200</WorkToMake>
			<MaxHitPoints>80</MaxHitPoints>
			<Mass>0.07</Mass>
			<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Hats/BaseballCap/BaseballCap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
	  <li>Civilian</li>
		<li>Lowtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
