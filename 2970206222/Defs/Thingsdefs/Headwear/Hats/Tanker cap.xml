<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--__________ Tanker cap __________-->

	<!-- Tanker cap -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_TankerCap</defName>
    <label>tanker cap</label>
    <description>A soviet tank cap.</description>
    <graphicData>
      <texPath>Things/Headwear/Hats/TankCap/TankCap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>20</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
			<WorkToMake>1200</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.1</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Hats/TankCap/TankCap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
	  <li>Soviet</li>
	  <li>Redline</li>
	  <li>Lowtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>