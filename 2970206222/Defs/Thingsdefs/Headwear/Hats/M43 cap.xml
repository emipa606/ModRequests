<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ M43 cap __________-->
  
  
  	<!-- M43 Fieldcap -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_M43Fieldcap</defName>
    <label>Reich fieldcap</label>
    <description>A reich imitation of the german m43 fieldcap, perfect for nazi larp.</description>
    <graphicData>
      <texPath>Things/Headwear/Hats/M43Fieldcap/M43Cap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
			<WorkToMake>1200</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.05</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Hats/M43Fieldcap/M43Cap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
    <li>Reich</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
 
</Defs>