<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ Olive Boonie __________-->
  
  
  	<!-- Boonie -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_BoonieOlive</defName>
    <label>olive boonie</label>
    <description>A olive boonie hat.</description>
    <graphicData>
      <texPath>Things/Headwear/Hats/Boonie/Olive/Boonie</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
			<WorkToMake>1200</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.09</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.35</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Hats/Boonie/Olive/Boonie</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
	  <li>Civilian</li>
		<li>Lowtier</li>
	    <li>Midtier</li>
		<li>Hightier</li>		
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
