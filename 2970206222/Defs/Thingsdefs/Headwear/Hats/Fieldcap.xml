<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ Black Fieldcap __________-->
  
  
  	<!-- Fieldcap -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_FieldcapBlack</defName>
    <label>black fieldcap</label>
    <description>A black military fieldcap.</description>
    <graphicData>
      <texPath>Things/Headwear/Hats/Fieldcap/Black/Fieldcap_2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
			<WorkToMake>1250</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.07</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.30</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Hats/Fieldcap/Black/Fieldcap_2</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
	    <li>Midtier</li>
		<li>Hightier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
