<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ M24 Commissar cap __________-->
	
	<!-- M24 Cap -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_M24CapCommissar</defName>
    <label>commissar M24 cap</label>
    <description>A cap worn by Red line commissars to signify authority from the state, instills fear, respect, or hatred.</description>
    <graphicData>
      <texPath>Things/Headwear/Hats/M24Cap/Commissar/m24Cap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
		<costList>
			<Leather_Plain>5</Leather_Plain>
		</costList>	
    <statBases>
			<WorkToMake>1500</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.07</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
    </statBases>
		<equippedStatOffsets>
			<SocialImpact>0.5</SocialImpact>
		</equippedStatOffsets>	
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Hats/M24Cap/Commissar/m24Cap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
		<li>Redline</li>
		<li>Commissar</li>		
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>  

</Defs>