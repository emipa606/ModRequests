<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ VDV Beret __________-->
  
  
  	<!-- Beret -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_METRO2033_BeretVDV</defName>
    <label>VDV beret</label>
    <description>A sky blue beret worn by VDV with a soviet hammer and sickle pin.</description>
    <graphicData>
      <texPath>Things/Headwear/Hats/Beret/VDV/Beret</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
			<WorkToMake>1500</WorkToMake>
			<MaxHitPoints>90</MaxHitPoints>
			<Mass>0.05</Mass>
			<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.5</EquipDelay>
    </statBases>
		<equippedStatOffsets>
			<SocialImpact>0.2</SocialImpact>
		</equippedStatOffsets>		
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headwear/Hats/Beret/VDV/Beret</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Soviet</li>
		<li>Redline</li>		
	    <li>Midtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
