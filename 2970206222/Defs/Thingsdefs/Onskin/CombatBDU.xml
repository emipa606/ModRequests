<Defs>

 <!--__________ Onskin ____________-->

 <!--__________ Flora BDU ____________-->


<!-- BDU -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_BDUFlora</defName>
    <description>A camo BDU of the early Russian Federation.</description>
    <label>flora BDU</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Onskin/CombatBDU/Flora/RussianBDU</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>	  
    </graphicData>
      <costStuffCount>80</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
      </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>105</MaxHitPoints>
      <WorkToMake>3500</WorkToMake>
      <Mass>0.3</Mass>
      <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.35</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.16</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>		
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Onskin/CombatBDU/Flora/RussianBDU</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>AFRF</li>
		<li>Lowtier</li>
	    <li>Midtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
 
