<!-- Tactical BDU -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_TacticalBDU</defName>
    <description>A sleek black tactical BDU favored by special forces.</description>
    <label>tactical BDU</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Onskin/TacticalBDU/Black/TacticalBDU</texPath>
