<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!--__________ Onskin ____________-->

 <!--__________ Sweater ____________-->


<!-- Sweater -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_Sweater</defName>
    <description>A common sweater, provides good warmth for its wearer.</description>
    <label>sweater</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Onskin/Sweater/Sweater</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>	  
    </graphicData>
<costList>
      <Cloth>75</Cloth>
    </costList>	
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <WorkToMake>2600</WorkToMake>
      <Mass>0.2</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.85</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <apparel>
    <useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Onskin/Sweater/Sweater</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>		
		<li>Lowtier</li>
        <li>Civilian</li>		
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>1</weight>
          <only>(75, 75, 75)</only>
        </li>           
		<li>
          <weight>1</weight>
          <only>(85, 87, 81)</only>
        </li>        
        <li>
          <weight>1</weight>
          <only>(107, 103, 93)</only>
        </li>
      </options>
    </colorGenerator>	
  </ThingDef>
  

</Defs>