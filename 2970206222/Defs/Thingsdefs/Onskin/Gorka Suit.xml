<Defs>

 <!--__________ Onskin ____________-->

 <!--__________ Gorka Suit ____________-->


<!-- Gorka Suit -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_GorkaSuit</defName>
    <description>A tactical combat suit utilized by elite Spetsnaz units, durable and most importantly can keep you warm during prolonged stay in the field.</description>
    <label>gorka suit</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Onskin/GorkaSuit/Gorka</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>	  
    </graphicData>
      <costStuffCount>115</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
      </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>4500</WorkToMake>
      <Mass>0.45</Mass>
      <StuffEffectMultiplierArmor>0.30</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.90</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>		
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Onskin/GorkaSuit/Gorka</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>AFRF</li>
		<li>Spetsnaz</li>
		<li>Midtier</li>
		<li>Hightier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
