 <!--__________ Hoodie ____________-->


<!-- Hoodie -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_Hoodie</defName>
    <description>A simply comfy hoodie.</description>
    <label>hoodie</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Onskin/Hoodie/Hoodie</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.7</drawSize>
    </graphicData>	  
<costList>
      <Cloth>75</Cloth>
    </costList>	
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>95</MaxHitPoints>
      <WorkToMake>2500</WorkToMake>
      <Mass>0.3</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.65</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>		
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Onskin/Hoodie/Hoodie</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
		<li>Lowtier</li>
        <li>Civilian</li>	
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options" Inherit="False">
      <options>
        <li>
          <weight>1</weight>
          <only>(160, 69, 57)</only>
        </li>           
		<li>
          <weight>1</weight>
          <only>(67, 83, 116)</only>
        </li>        
        <li>
          <weight>1</weight>
          <only>(77, 77, 77)</only>
        </li>
        <li>
          <weight>1</weight>
          <only>(142, 142, 142)</only>		  
        </li>
        <li>
          <weight>1</weight>
          <only>(83, 90, 80)</only>
        </li>
        <li>
          <weight>1</weight>
          <only>(107, 94, 98)</only>
        </li>		
      </options>
    </colorGenerator>		
  </ThingDef>
  
</Defs>