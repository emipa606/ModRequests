<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!--__________ Onskin ____________-->

 <!--__________ Police Uniform ____________-->


<!-- Police Uniform -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_PoliceUniform</defName>
    <description>A uniform belonging to Moscow PD.</description>
    <label>police uniform</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Onskin/PoliceUniform/PoliceUniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>	  
    </graphicData>
      <costStuffCount>70</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
      </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>2800</WorkToMake>
      <Mass>0.2</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.16</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>		
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Onskin/PoliceUniform/PoliceUniform</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
		<li>Lowtier</li>
        <li>Civilian</li>		
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>