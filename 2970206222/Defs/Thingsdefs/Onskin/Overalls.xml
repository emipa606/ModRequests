<Defs>

 <!--__________ Onskin ____________-->

 <!--__________ Workers Overalls ____________-->


<!-- Overall -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_OverallWorker</defName>
    <description>A snug turtle neck to keep the wearer wearer warm and durable overalls to assist their work.</description>
    <label>worker overalls</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Onskin/Overalls/Worker/Overalls</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>	  
    </graphicData>
      <costStuffCount>95</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
      </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>3550</WorkToMake>
      <Mass>0.3</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.90</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>		
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Onskin/Overalls/Worker/Overalls</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Civilian</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
