<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<!--__________ Plate Armor __________-->
  
  	<!-- Plate armor -->  
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>ODZ_METRO2033_PlateArmor</defName>
    <label>makeshift plate armor</label>
    <description>A steel curiass that was used by red army assault engineers and other special units during the second world war, now sees use amongst survivors due being easily produceable by blacksmiths.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Armor/PlateArmor/SovietPlateArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	 	  
      <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>8500</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>6.5</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.85</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.40</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>3.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.25</MoveSpeed>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
	<Leather_Plain>15</Leather_Plain>	
      <Cloth>5</Cloth>
      <Steel>65</Steel>
    </costList>
    <apparel>
	<careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Armor/PlateArmor/SovietPlateArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
	  <li>Civilian</li>
	  <li>Soviet</li>
	  <li>Redline</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>	
  </ThingDef>

</Defs>
