<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--__________ Defender __________-->
  
  	<!-- Defender -->  
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>ODZ_METRO2033_DefenderArmor</defName>
    <label>defender vest</label>
    <description>Sturdy armor with excelent coverage favored by spetsnaz units.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Armor/Defender/Defender</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9500</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>3.0</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.25</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>50</Cloth>
      <Steel>75</Steel>
    </costList>
    <apparel>
	<careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Armor/Defender/Defender</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
	  <li>AFRF</li>
	  <li>Spetsnaz</li>
	  <li>Polis</li>
	  <li>Hightier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
  </ThingDef>
  
