<Defs>
  


	<!--__________ 6b3 __________-->
  
  	<!-- 6b3 -->  
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>ODZ_METRO2033_6b3Armor</defName>
    <label>6b3 vest</label>
    <description>A solid soviet creation to protect its troops.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Armor/6b3/6b3</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>3.5</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.95</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <AimingDelayFactor>-0.03</AimingDelayFactor>
	  <CarryingCapacity>25</CarryingCapacity>
	  <MedicalTendSpeed>0.05</MedicalTendSpeed>	
      <MoveSpeed>-0.15</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>35</Cloth>
      <Steel>65</Steel>
    </costList>
    <apparel>
	<careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Armor/6b3/6b3</wornGraphicPath>
      <layers>
        <li>Middle</li>	
      </layers>
      <tags>
	  <li>Soviet</li>
	  <li>Redline</li>
	  <li>Lowtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
  </ThingDef>

