<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<!--__________ 6b2 __________-->
  
  	<!-- 6b2 -->  
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>ODZ_METRO2033_6b2Armor</defName>
    <label>6b2 vest</label>
    <description>Early soviet body armor used in afghanistan and even the chechen wars.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Armor/6b2/6b2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>6500</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>2</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.70</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>30</Cloth>
      <Steel>45</Steel>
    </costList>
    <apparel>
	<careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Armor/6b2/6b2</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
	  <li>Soviet</li>
	  <li>Redline</li>
	  <li>Lowtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options" Inherit="False">
      <options>
        <li>
          <weight>1</weight>
          <only>(154, 145, 119)</only>
        </li>           
		<li>
          <weight>1</weight>
          <only>(121, 122, 98)</only>
        </li>        
      </options>
    </colorGenerator>		
  </ThingDef>

