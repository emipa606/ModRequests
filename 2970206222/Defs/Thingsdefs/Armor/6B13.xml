<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<!--__________ 6b13 __________-->
  
  	<!-- 6b13 -->  
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>ODZ_METRO2033_6b13Armor</defName>
    <label>6b13 vest</label>
    <description>A modern russian design, very protective and comfortable.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Armor/6b13/6b13</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>3.0</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.15</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>40</Cloth>
      <Steel>75</Steel>
    </costList>
    <apparel>
	<careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Armor/6b13/6b13</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
	  <li>AFRF</li>
	  <li>Reich</li>
	  <li>Midtier</li>
	  <li>Hightier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options" Inherit="False">
      <options>
        <li>
          <weight>1</weight>
          <only>(139, 133, 106)</only>
        </li>           
		<li>
          <weight>1</weight>
          <only>(118, 119, 91)</only>
        </li>        
      </options>
    </colorGenerator>		
  </ThingDef>

