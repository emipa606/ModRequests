<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<!--__________ Kora Kulon __________-->
  
  	<!-- Kora Kulon -->  
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>ODZ_METRO2033_KoraKulonArmor</defName>
    <label>kora kulon vest</label>
    <description>A lightweight but reliable modern vest, worn by spetsnaz and police units alike.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>  
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Armor/KoraKulon/KoraKulon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>8500</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>2</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.38</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>3.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.01</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>25</Cloth>
      <Steel>55</Steel>
    </costList>
    <apparel>
	<careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Armor/KoraKulon/KoraKulon</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
	  <li>AFRF</li>
	  <li>OMON</li>
	  <li>HANSA</li>
	  <li>Spetsnaz</li>
	  <li>Reich</li>
	  <li>Midtier</li>
	  <li>Hightier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options" Inherit="False">
      <options>
        <li>
          <weight>1</weight>
          <only>(78, 78, 78)</only>
        </li>           
		<li>
          <weight>1</weight>
          <only>(71, 76, 78)</only>
        </li>        
      </options>
    </colorGenerator>		
  </ThingDef>

</Defs>
