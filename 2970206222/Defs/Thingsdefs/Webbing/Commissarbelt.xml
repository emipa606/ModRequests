<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  
 <!--__________ Commissar Belt ____________-->  
  
        <!-- Commissar Belt -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_CommissarBelt</defName>
    <label>commissar belt</label>
    <description>Redline impersonation of a soviet commissar, instills fear and obedience..</description>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>	  
    </recipeMaker>
    <graphicData>
      <texPath>Things/Webbing/CommissarBelt/Officerbelt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>125</MaxHitPoints>
      <WorkToMake>1250</WorkToMake>
      <Mass>1</Mass> 
	  <Flammability>0.25</Flammability>
      <StuffEffectMultiplierArmor>0.10</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <AimingDelayFactor>-0.15</AimingDelayFactor>
	  <CarryingCapacity>10</CarryingCapacity>
	  <MedicalTendSpeed>0.05</MedicalTendSpeed>
      <MoveSpeed>-0.01</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Webbing/CommissarBelt/Officerbelt</wornGraphicPath>
	  <wornGraphicData>
      </wornGraphicData>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
	  <li>Soviet</li>
	  <li>Redline</li>
	  <li>Commissar</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
  </ThingDef>

</Defs>