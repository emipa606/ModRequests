<Defs>


  
 <!--__________ Chicom Rig ____________-->  
  
        <!-- Chicom Rig -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_ChicomRig</defName>
    <label>chicom rig</label>
    <description>Soviet combat webbing that sees extremely wide use across the world to this day.</description>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>	  
    </recipeMaker>
    <graphicData>
      <texPath>Things/Webbing/ChicomRig/ChicomRig</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>
    </graphicData>
    <costStuffCount>45</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>125</MaxHitPoints>
      <WorkToMake>3000</WorkToMake>
      <Mass>1</Mass> 
	  <Flammability>0.25</Flammability>
      <StuffEffectMultiplierArmor>0.20</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
	  <CarryingCapacity>20</CarryingCapacity>
	  <MedicalTendSpeed>0.05</MedicalTendSpeed>
      <MoveSpeed>-0.01</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Webbing/ChicomRig/ChicomRig</wornGraphicPath>
	  <wornGraphicData>
      </wornGraphicData>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
	  <li>Soviet</li>
	  <li>Redline</li>
	  <li>Lowtier</li>
	  <li>Midtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
  </ThingDef>

</Defs>