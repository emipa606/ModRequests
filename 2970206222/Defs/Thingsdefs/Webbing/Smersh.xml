<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  
 <!--__________ Smersh ____________-->  
  
        <!-- Smersh -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_SmershVest</defName>
    <label>smersh vest</label>
    <description>Created for elite spetsnaz units, good quality and well designed.</description>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>	  
    </recipeMaker>
    <graphicData>
      <texPath>Things/Webbing/Smersh/Smersh</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.7</drawSize>
    </graphicData>
    <costStuffCount>85</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>6500</WorkToMake>
      <Mass>1</Mass> 
	  <Flammability>0.25</Flammability>
      <StuffEffectMultiplierArmor>0.22</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.0</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <AimingDelayFactor>-0.08</AimingDelayFactor>
	  <CarryingCapacity>65</CarryingCapacity>
	  <MedicalTendSpeed>0.10</MedicalTendSpeed>
      <MoveSpeed>-0.02</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Webbing/Smersh/Smersh</wornGraphicPath>
	  <wornGraphicData>
      </wornGraphicData>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
	  <li>AFRF</li>
	  <li>HANSA</li>
	  <li>Reich</li>
	  <li>Polis</li>
	  <li>Spetsnaz</li>
	  <li>Midtier</li>
	  <li>Hightier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
  </ThingDef>
  
  
