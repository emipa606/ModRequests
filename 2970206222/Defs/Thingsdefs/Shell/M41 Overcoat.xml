 <!--__________ Soviet __________--> 

 <!-- M41 Overcoat -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_M41Overcoat</defName>
    <label>M41 overcoat</label>
    <description>An old soviet wintercoat dating back to the 2nd world war.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Shell/M41Overcoat/M41Overcoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
      <drawSize>1.7</drawSize>
    </graphicData>
    <costStuffCount>80</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
      </stuffCategories>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.00</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>			
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Shoulders</li>
		<li>Legs</li>
      </bodyPartGroups>
        <wornGraphicPath>Things/Shell/M41Overcoat/M41Overcoat</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Soviet</li>
		<li>Redline</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>  
  
</Defs>