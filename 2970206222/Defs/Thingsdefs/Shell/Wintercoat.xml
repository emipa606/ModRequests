 <!-- Winter Coat -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_Wintercoat</defName>
    <label>russian parka</label>
    <description>A parka that will keep you warm on even the coldest of russian winters.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Shell/WinterCoat/WinterCoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>	  
      <drawSize>1.7</drawSize>	 
    </graphicData>
<costList>
      <Cloth>75</Cloth>
    </costList>	
    <statBases>
      <MaxHitPoints>185</MaxHitPoints>
      <WorkToMake>8200</WorkToMake>
      <Mass>1.7</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Shoulders</li>
      </bodyPartGroups>
        <wornGraphicPath>Things/Shell/WinterCoat/WinterCoat</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Civilian</li>	
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options" Inherit="False">
      <options>
