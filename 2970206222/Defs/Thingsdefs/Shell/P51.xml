<Defs>

 <!--__________ Shell __________-->
  
 <!--__________ Black P51 __________--> 

 <!-- P51 -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_P51CoatBlack</defName>
    <label>black P51 coat</label>
    <description>A russian army coat in black. Will keep you warm.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Shell/P51/Black/P51</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
      <drawSize>1.7</drawSize>
    </graphicData>
    <costStuffCount>70</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
      </stuffCategories>
    <statBases>
      <MaxHitPoints>175</MaxHitPoints>
      <WorkToMake>7500</WorkToMake>
      <Mass>1.5</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.70</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>			
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Shoulders</li>
      </bodyPartGroups>
        <wornGraphicPath>Things/Shell/P51/Black/P51</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>AFRF</li>
	    <li>Midtier</li>
		<li>Hightier</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

