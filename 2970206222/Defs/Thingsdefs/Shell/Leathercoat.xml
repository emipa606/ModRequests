<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!--__________ Shell __________-->
  
 <!--__________ Leather Duster __________--> 

 <!-- Leather Duster -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_LeatherDuster</defName>
    <label>leather duster</label>
    <description>A leather duster worn by all but highly favored by bandits.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Shell/LeatherDuster/LeatherLongCoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.7</drawSize>	 
    </graphicData>
		<costList>
			<Leather_Plain>75</Leather_Plain>
		</costList>	
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToMake>7500</WorkToMake>
      <Mass>1.7</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>			
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Shoulders</li>
		<li>Legs</li>
      </bodyPartGroups>
        <wornGraphicPath>Things/Shell/LeatherDuster/LeatherLongCoat</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
	  <li>Civilian</li>
	  <li>Bandit</li>
	  <li>Lowtier</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options" Inherit="False">
      <options>
        <li>
          <weight>1</weight>
          <only>(78, 78, 78)</only>
        </li>           
		<li>
          <weight>1</weight>
          <only>(107, 101, 86)</only>
        </li>        
      </options>
    </colorGenerator>	
  </ThingDef>  
  
</Defs>