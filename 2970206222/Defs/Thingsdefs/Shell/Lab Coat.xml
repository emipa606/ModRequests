<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!--__________ Shell __________-->
  
 <!--__________ Labcoat __________--> 

 <!-- Lab Coat -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_LabCoat</defName>
    <label>labcoat</label>
    <description>A white coat worn by doctors and scientists alike.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Shell/Labcoat/Labcoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
      <drawSize>1.7</drawSize>	 
    </graphicData>
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>125</MaxHitPoints>
      <WorkToMake>7200</WorkToMake>
      <Mass>1.5</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>			
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Shoulders</li>
		<li>Legs</li>
      </bodyPartGroups>
        <wornGraphicPath>Things/Shell/Labcoat/Labcoat</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
	  <li>Doctor</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>	
  </ThingDef>  
  
</Defs>