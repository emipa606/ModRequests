 <!-- Bomber Jacket -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_METRO2033_BomberJacket</defName>
    <label>bomber jacket</label>
    <description>A sturdy and warm jacket with a fur collar.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_METRO2033_Russia</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Shell/Bomberjacket/Bomberjacket</texPath>
      <graphicClass>Graphic_Single</graphicClass> 
      <drawSize>1.7</drawSize>	 
    </graphicData>
<costList>
      <Cloth>75</Cloth>
    </costList>	
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToMake>7000</WorkToMake>
      <Mass>1.7</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.95</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>			
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Shoulders</li>
      </bodyPartGroups>
        <wornGraphicPath>Things/Shell/Bomberjacket/Bomberjacket</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
	  <li>Bandit</li>
		<li>Lowtier</li>
        <li>Civilian</li>	
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options" Inherit="False">
      <options>
        <li>
          <weight>1</weight>
          <only>(78, 78, 78)</only>
        </li>           
		<li>
          <weight>1</weight>
          <only>(148, 134, 109)</only>
        </li>        
        <li>
          <weight>1</weight>
          <only>(101, 89, 76)</only>
        </li>
        <li>
          <weight>1</weight>
          <only>(76, 89, 101)</only>		  
        </li>
        <li>
          <weight>1</weight>
          <only>(95, 71, 68)</only>
        </li>	
      </options>
    </colorGenerator>		
  </ThingDef>  
  
