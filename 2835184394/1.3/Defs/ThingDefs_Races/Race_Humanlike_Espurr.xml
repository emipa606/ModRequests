<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<AlienRace.ThingDef_AlienRace ParentName="TRAHS_MeowsticRaceBase">
  <defName>TRAHS_EspurrRace</defName>
  <label>Espurr</label>
  <description>Espurr is a bipedal, feline Pok√©mon. Its fur is a pale gray with white tips on its ears and white paws. There are tousled tufts of fur on its head, cheeks, shoulders, chest, and hips. It has wide, pale purple eyes with darker purple pupils, a tiny nose, and a small mouth. When its mouth is open, two pointed teeth can be seen on its upper jaw. Its tail is fluffy and slightly curled.</description>
  <alienRace>
      <generalSettings>
          <maleGenderProbability>0.5</maleGenderProbability>
          <immuneToAge>false</immuneToAge>
          <canLayDown>true</canLayDown>
          <allowHumanBios>true</allowHumanBios>
          <humanRecipeImport>true</humanRecipeImport>
          <alienPartGenerator>
              <aliencrowntypes>
                <li>Average_Normal</li>
              </aliencrowntypes>
              <alienbodytypes>
                <li>Thin</li>
              </alienbodytypes>
              <useGenderedHeads>false</useGenderedHeads>
              <useGenderedBodies>false</useGenderedBodies>
              <colorChannels>
                  <li>
                      <name>skin</name>
                      <first Class="ColorGenerator_Options">
                          <options>
                              <li>
                                <weight>100</weight>
                                <only>RGBA(197,192,217,255)</only> <!-- Normal -->
                              </li>
                              <li>
                                <weight>10</weight>
                                <only>RGBA(253,226,240,255)</only> <!-- Shiny -->
                              </li>
                          </options>
                      </first>
                  </li>
                  <li>
                    <name>skin</name>
                    <second Class="ColorGenerator_Options">
                      <options>
                        <li>
                          <weight>100</weight>
                          <only>RGBA(253,226,240,255)</only> <!-- Normal -->
                        </li>
                      </options>
                    </second>
                  </li>
                  <li>
                    <name>hair</name>
                    <first Class="ColorGenerator_Options">
                      <options>
                        <li>
                          <weight>100</weight>
                          <only>RGBA(253,226,240,255)</only> <!-- Normal -->
                        </li>
                      </options>
                    </first>
                  </li>
              </colorChannels>
          </alienPartGenerator>
      </generalSettings>
      <graphicPaths>
          <li>
              <body>TRAHS/Things/Pawn/Espurr/Race/Bodies/</body>
              <head>TRAHS/Things/Pawn/Espurr/Race/Heads/</head>
          </li>
      </graphicPaths>
      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <hasStyle>true</hasStyle>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
        <li>
          <key>TattooDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
      </styleSettings>
      <thoughtSettings />
      <relationSettings />
      <raceRestriction />
      <compatibility>
          <isFlesh>true</isFlesh>
          <isSentient>true</isSentient>
          <hasBlood>true</hasBlood>
      </compatibility>
  </alienRace>
</AlienRace.ThingDef_AlienRace>


<AlienRace.RaceSettings>
  <defName>TRAHS_EspurrRaceSettings</defName>
  <pawnKindSettings>
    <startingColonists>
      <li>
        <pawnKindEntries>
          <li>
            <kindDefs>
              <li>TRAHS_EspurrColonist</li>
            </kindDefs>
            <chance>5.0</chance>
          </li>
        </pawnKindEntries>
        <factionDefs>
          <li>PlayerColony</li>
        </factionDefs>
      </li>
    </startingColonists>
  </pawnKindSettings>
</AlienRace.RaceSettings>

</Defs>