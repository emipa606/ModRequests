<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>TRAHS_Apparel_MeowsticCape</defName>
        <label>cape</label>
        <description>A long cape of elegant design, originally designed for meowstics and espurrs, it can be worn by other humanlikes just as easily.</description>
        <graphicData>
          <texPath>TRAHS/Things/Pawn/Meowstic/Apparel/Cape/Cape</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>1.05</drawSize>
        </graphicData>
        <costStuffCount>80</costStuffCount>
        <stuffCategories>
          <li>Fabric</li>
          <li>Leathery</li>
        </stuffCategories>
        <thingCategories>
          <li>ApparelNoble</li>
        </thingCategories>
        <statBases>
          <MaxHitPoints>200</MaxHitPoints>
          <WorkToMake>16000</WorkToMake>
          <Mass>2</Mass>
          <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
          <StuffEffectMultiplierInsulation_Cold>0.65</StuffEffectMultiplierInsulation_Cold>
          <StuffEffectMultiplierInsulation_Heat>0.90</StuffEffectMultiplierInsulation_Heat>
          <EquipDelay>3</EquipDelay>
        </statBases>
        <apparel>
          <bodyPartGroups>
            <li>Torso</li>
            <li>Neck</li>
            <li>Shoulders</li>
            <li>Arms</li>
            <li>Legs</li>
          </bodyPartGroups>
          <wornGraphicPath>TRAHS/Things/Pawn/Meowstic/Apparel/Cape/Cape</wornGraphicPath>
          <shellRenderedBehindHead>true</shellRenderedBehindHead>
          <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
          <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
          <layers>
            <li>Shell</li>
          </layers>
          <tags>
            <li>Cape</li>
            <li>Royal</li>
          </tags>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel" />
      </ThingDef>

</Defs>