<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--Bed-->
	<ThingDef ParentName="RGKArtableBedBase">
		<defName>GL_ClassyQuadraBed</defName>
		<label>classy quadra bed</label>
		<description>Elegant bed decorated with lace that fits four people. It is very comfortable.</description>
		<altitudeLayer>Building</altitudeLayer>
		<graphicData>
			<texPath>Things/Building/Furniture/GL_ClassyQuadraBed</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(6,4)</drawSize>
			<damageData>
				<rect>(0,0.05,4,1.95)</rect>
			</damageData>
		</graphicData>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>RGK_EndTableWithLamp</li>
					<li>RGK_EndTableWithLampE</li>
					<li>RGK_Dresser</li>
					<li>RGK_EndTable</li>
					<li>WardrobeA</li>
					<li>WardrobeB</li>
					<li>GL_Teddy</li>
				</linkableFacilities>
			</li>						
			<li Class="Gloomylynx.CompProperties_SecondLayerFollow">
				<graphicData>
					<texPath>Things/Building/Furniture/GL_ClassyQuadraBedFrame</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<shaderType>Transparent</shaderType>
					<drawSize>(6,4)</drawSize>
				</graphicData>
				<altitudeLayer>Pawn</altitudeLayer>
			</li>
			<li Class="Gloomylynx.CompProperties_SecondLayer">
				<graphicData>
					<texPath>Things/Building/Furniture/GL_ClassyQuadraBedLace</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<shaderType>Transparent</shaderType>
					<drawSize>(6.05,4.05)</drawSize>
					<color>(1,1,1,0.93)</color>
				</graphicData>
				<altitudeLayer>Blueprint</altitudeLayer>
			</li>
		</comps>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<WorkToBuild>5000</WorkToBuild>
			<Mass>120</Mass>
			<Comfort>1.0</Comfort>
			<Beauty>120</Beauty>
			<BedRestEffectiveness>1.1</BedRestEffectiveness>
			<ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
			<SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
		</statBases>
		<size>(4,2)</size>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>200</costStuffCount>
		<costList>
			<DevilstrandCloth>130</DevilstrandCloth>
		</costList>
		<building>
			<bed_showSleeperBody>False</bed_showSleeperBody>
			<bed_healPerDay>5</bed_healPerDay>
		</building>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<fillPercent>0.5</fillPercent>
		<pathCost>60</pathCost>
		<leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
		<staticSunShadowHeight>0.15</staticSunShadowHeight>
		<castEdgeShadows>True</castEdgeShadows>
		<designationHotKey>Misc1</designationHotKey>
		<techLevel>Medieval</techLevel>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
		<designationCategory>OldStyleFurniture</designationCategory>
		<uiIconScale>0.85</uiIconScale>
	</ThingDef>
</Defs>