<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<RecipeDef>
	<defName>Make_BerrySorbet</defName>
	<label>make berry sorbet</label>
	<description>making a pint of berry sorbet</description>
	<jobString>making berry sorbet.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
	<effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
		<li>ElectricStove</li>
    </recipeUsers>
	<workAmount>600</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>RawCorn</li>
	      </thingDefs>
	    </filter>
	    <count>5</count>
	  </li>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>RawBerries</li>
	      </thingDefs>
	    </filter>
	    <count>20</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>RawCorn</li>
	    <li>RawBerries</li>
	  </thingDefs>
	</fixedIngredientFilter>
	<products>
	  <BerrySorbet>1</BerrySorbet>
	</products>
	<workSkill>Cooking</workSkill>
		<skillRequirements>
			<Cooking>4</Cooking>
	     </skillRequirements>
  </RecipeDef>

