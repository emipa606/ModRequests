<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <Vehicles.VehicleBuildDef ParentName="RT_BaseVehicleBuild">
    <!-- 建築型態的載具，基本上與BuildingDef相同-->
    <defName>RT_HD2FRV_Vehicle_Blueprint</defName>
    <label>M-102 Fast Reconnaissance Vehicle</label>
    <description>todo</description>
    <graphicData>
      <texPath>Vehicles/M102FRV/vehicle</texPath>
      <drawSize>(6,6)</drawSize>
    </graphicData>
    <size>(3,5)</size>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>8000</WorkToBuild>
      <Flammability>0.05</Flammability>
    </statBases>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <costList>
      <EngineMedium>1</EngineMedium>
      <ComponentFuelTank>1</ComponentFuelTank>
      <ComponentTransmission>1</ComponentTransmission>
      <ComponentWheelTire>4</ComponentWheelTire>
      <ComponentIndustrial>15</ComponentIndustrial>
      <Steel>750</Steel>
    </costList>
    <thingToSpawn>RT_HD2FRV_Vehicle</thingToSpawn>
    <!-- 建造後生成的載具Kind,這是與建築唯一不一樣的-->
  </Vehicles.VehicleBuildDef>
  <Vehicles.VehicleDef ParentName="RT_BaseVehicle">
    <defName>RT_HD2FRV_Vehicle</defName>
    <label>M-102 Fast Reconnaissance Vehicle</label>
    <description>todo</description>
    <buildDef>RT_HD2FRV_Vehicle_Blueprint</buildDef>
    <graphicData>
      <texPath>Vehicles/M102FRV/vehicle</texPath>
      <drawSize>(6,6)</drawSize>
    </graphicData>
    <size>(3,5)</size>
    <fillPercent>1</fillPercent>
    <vehicleCategory>Transport</vehicleCategory>
    <statBases>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <Flammability>0</Flammability>
      <MarketValue>1900</MarketValue>
    </statBases>
    <vehicleStats>
      <Mass>2000</Mass>
      <MoveSpeed>12</MoveSpeed>
      <CargoCapacity>1200</CargoCapacity>
      <RepairRate>0.5</RepairRate>
    </vehicleStats>
    <soundOneShotsOnEvent Inherit="False">
      <li>
        <key>PawnEntered</key>
        <value>VVE_VehicleEnter</value>
      </li>
      <li>
        <key>PawnExited</key>
        <value>VVE_VehicleEnter</value>
      </li>
      <li>
        <key>IgnitionOn</key>
        <value>RT_WheeledVehicleStart</value>
      </li>
      <li>
        <key>IgnitionOff</key>
        <value>RT_WheeledVehicleStop</value>
      </li>
    </soundOneShotsOnEvent>
    <soundSustainersOnEvent Inherit="False">
      <li>
        <start>IgnitionOn</start>
        <stop>IgnitionOff</stop>
        <value>RT_WheeledVehicleEngine</value>
      </li>
    </soundSustainersOnEvent>
    <race>
      <baseBodySize>3.5</baseBodySize>
    </race>
    <properties>
      <customRoadCosts AssignDefaults="0.25" />
      <worldSpeedMultiplier>1</worldSpeedMultiplier>
      <offRoadMultiplier>1.1</offRoadMultiplier>
      <winterSpeedMultiplier>2.0</winterSpeedMultiplier>
      <vehicleJobLimitations>
        <li>(RepairVehicle, 4)</li>
      </vehicleJobLimitations>
      <roles>
        <li>
          <key>driver</key>
          <label>Driver</label>
          <slots>1</slots>
          <slotsToOperate>1</slotsToOperate>
          <handlingTypes>
            <li>Movement</li>
          </handlingTypes>
          <hitbox>
            <cells>
              <li>(0, 1)</li>
            </cells>
          </hitbox>
        </li>
        <li>
          <key>passenger</key>
          <label>Passenger</label>
          <slots>3</slots>
          <hitbox>
            <cells>
              <li>(0, 0)</li>
            </cells>
          </hitbox>
        </li>
        <li>
          <key>gunner</key>
          <label>gunner</label>
          <slots>1</slots>
          <slotsToOperate>1</slotsToOperate>
          <handlingTypes>Turret</handlingTypes>
          <hitbox>
            <cells>
              <li>(0, 2)</li>
            </cells>
          </hitbox>
          <pawnRenderer>
            <layer>3</layer>
            <layerNorth>3</layerNorth>
            <layerSouth>0</layerSouth>
            <angleNorth>0</angleNorth>
            <angleEast>0</angleEast>
            <angleNorthEast>0</angleNorthEast>
            <angleSouthEast>0</angleSouthEast>
            <drawOffsetNorth>(0,3,-0.3)</drawOffsetNorth>
            <drawOffsetSouth>(0,0,1.9)</drawOffsetSouth>
            <drawOffsetEast>(-1.3,0,0.9)</drawOffsetEast>
            <drawOffsetWest>(1.2,0,0.9)</drawOffsetWest>
          </pawnRenderer>
          <turretIds>
            <li>mainTurret</li>
          </turretIds>
        </li>
      </roles>
    </properties>
    <components>
      <!-- Internal mobile Part 內部驅動部件-->
      <li>
        <!-- Engine 100-->
        <key>Engine</key>
        <label>Engine</label>
        <health>80</health>
        <priorityStatEfficiency>true</priorityStatEfficiency>
        <categories>
          <li>MoveSpeed</li>
        </categories>
        <depth>Internal</depth>
        <reactors>
          <li Class="Vehicles.Reactor_Explosive">
            <indicator>VF_Explosive</indicator>
            <chance>0.25</chance>
            <maxHealth>0.3</maxHealth>
            <radius>3</radius>
            <damageDef>Bomb</damageDef>
          </li>
        </reactors>
        <hitbox>
          <cells>
            <li>(0, 2)</li>
          </cells>
        </hitbox>
      </li>
      <li>
        <!-- LeftFrontSuspension 40-->
        <key>LeftFrontSuspension</key>
        <label>left front suspensions</label>
        <health>60</health>
        <depth>Internal</depth>
        <hitbox>
          <cells>
            <li>(-1, 2)</li>
          </cells>
        </hitbox>
        <categories>
          <li>MoveSpeed</li>
        </categories>
      </li>
      <li>
        <!-- RightFrontSuspension 40-->
        <key>RightFrontSuspension</key>
        <label>right front suspensions</label>
        <health>60</health>
        <depth>Internal</depth>
        <hitbox>
          <cells>
            <li>(1, 2)</li>
          </cells>
        </hitbox>
        <categories>
          <li>MoveSpeed</li>
        </categories>
      </li>
      <li>
        <!-- LeftRearSuspension 40-->
        <key>LeftRearSuspension</key>
        <label>left rear suspensions</label>
        <health>60</health>
        <depth>Internal</depth>
        <hitbox>
          <cells>
            <li>(-1, -2)</li>
          </cells>
        </hitbox>
        <categories>
          <li>MoveSpeed</li>
        </categories>
      </li>
      <li>
        <!-- RightRearSuspension 40-->
        <key>RightRearSuspension</key>
        <label>right rear suspensions</label>
        <health>60</health>
        <depth>Internal</depth>
        <hitbox>
          <cells>
            <li>(1, -2)</li>
          </cells>
        </hitbox>
        <categories>
          <li>MoveSpeed</li>
        </categories>
      </li>
      <li>
        <!-- Gearbox 45-->
        <key>Gearbox</key>
        <label>gear box</label>
        <health>45</health>
        <depth>Internal</depth>
        <hitbox>
          <cells>
            <li>(0, 1)</li>
          </cells>
        </hitbox>
        <categories>
          <li>MoveSpeed</li>
        </categories>
      </li>
      <li>
        <!-- FuelTank 40-->
        <key>FuelTank</key>
        <label>fuel tank</label>
        <health>60</health>
        <depth>Internal</depth>
        <reactors>
          <li Class="Vehicles.Reactor_FuelLeak" />
        </reactors>
        <hitbox>
          <cells>
            <li>(0, 0)</li>
          </cells>
        </hitbox>
      </li>
      <!-- External mobile Part 外部驅動部件-->
      <li>
        <!-- LeftFrontWheel 30-->
        <key>LeftFrontWheel</key>
        <label>left front Wheels</label>
        <health>75</health>
        <depth>External</depth>
        <categories>
          <li>MoveSpeed</li>
        </categories>
        <tags>
          <li>Wheel</li>
        </tags>
        <armor>
          <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
        </armor>
        <hitbox>
          <fallthrough>false</fallthrough>
          <cells>
            <li>(-1, 2)</li>
          </cells>
        </hitbox>
        <hitWeight>2</hitWeight>
      </li>
      <li>
        <!-- RightFrontWheel 30-->
        <key>RightFrontWheel</key>
        <label>right front Wheels</label>
        <health>75</health>
        <depth>External</depth>
        <categories>
          <li>MoveSpeed</li>
        </categories>
        <tags>
          <li>Wheel</li>
        </tags>
        <armor>
          <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
        </armor>
        <hitbox>
          <fallthrough>false</fallthrough>
          <cells>
            <li>(1, 2)</li>
          </cells>
        </hitbox>
        <hitWeight>2</hitWeight>
      </li>
      <li>
        <!-- LeftRearWheel	30-->
        <key>LeftRearWheel</key>
        <label>left rear wheels</label>
        <health>75</health>
        <depth>External</depth>
        <categories>
          <li>MoveSpeed</li>
        </categories>
        <tags>
          <li>Wheel</li>
        </tags>
        <armor>
          <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
        </armor>
        <hitbox>
          <fallthrough>false</fallthrough>
          <cells>
            <li>(-1, -2)</li>
          </cells>
        </hitbox>
        <hitWeight>2</hitWeight>
      </li>
      <li>
        <!-- RightRearWheel 30-->
        <key>RightRearWheel</key>
        <label>right rear Wheels</label>
        <health>75</health>
        <depth>External</depth>
        <categories>
          <li>MoveSpeed</li>
        </categories>
        <tags>
          <li>Wheel</li>
        </tags>
        <armor>
          <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
        </armor>
        <hitbox>
          <fallthrough>false</fallthrough>
          <cells>
            <li>(1, -2)</li>
          </cells>
        </hitbox>
        <hitWeight>2</hitWeight>
      </li>
      <!-- External Shell Part 外殼部件-->
      <li>
        <!-- EngineHood 40-->
        <key>EngineHood</key>
        <label>engine hood</label>
        <health>120</health>
        <depth>External</depth>
        <hitWeight>3</hitWeight>
        <hitbox>
          <side>Body</side>
        </hitbox>
        <armor>
          <ArmorRating_Blunt>0.7</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
        </armor>
      </li>
      <li>
        <!-- Roof 40-->
        <key>Roof</key>
        <label>roof</label>
        <health>120</health>
        <depth>External</depth>
        <hitbox>
          <side>Body</side>
        </hitbox>
        <armor>
          <ArmorRating_Blunt>0.7</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
        </armor>
      </li>
      <li>
        <!-- LeftDoorPanel 40-->
        <key>LeftDoorPanel</key>
        <label>left door panel</label>
        <health>120</health>
        <depth>External</depth>
        <hitbox>
          <side>Left</side>
        </hitbox>
        <hitWeight>3</hitWeight>
        <armor>
          <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
        </armor>
      </li>
      <li>
        <!-- RightDoorPanel 40-->
        <key>RightDoorPanel</key>
        <label>right door panel</label>
        <health>120</health>
        <depth>External</depth>
        <hitbox>
          <side>Right</side>
        </hitbox>
        <hitWeight>3</hitWeight>
        <armor>
          <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
        </armor>
      </li>
      <li>
        <!-- FrontBumper 30-->
        <key>FrontBumper</key>
        <label>front bumper</label>
        <health>120</health>
        <depth>External</depth>
        <hitbox>
          <side>Front</side>
        </hitbox>
        <hitWeight>5</hitWeight>
        <armor>
          <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
        </armor>
      </li>
      <li>
        <!-- RearBumper 25-->
        <key>RearBumper</key>
        <label>rear bumper</label>
        <health>120</health>
        <depth>External</depth>
        <hitbox>
          <side>Back</side>
        </hitbox>
        <hitWeight>5</hitWeight>
        <armor>
          <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
        </armor>
      </li>
      <!-- Internal Shell Part 內裝部件-->
      <li>
        <!-- Interior 30-->
        <key>Interior</key>
        <label>interior</label>
        <health>30</health>
        <depth>Internal</depth>
      </li>
      <li>
        <!-- Dashboard 30-->
        <key>Dashboard</key>
        <label>dashboard</label>
        <health>30</health>
        <depth>Internal</depth>
      </li>
      <li>
        <!-- SteeringWheel 20-->
        <key>SteeringWheel</key>
        <label>steering wheel</label>
        <health>20</health>
        <depth>Internal</depth>
      </li>
    </components>
    <comps>
      <li Class="Vehicles.CompProperties_FueledTravel">
        <fuelType>Chemfuel</fuelType>
        <leakDef>Filth_Fuel</leakDef>
        <fuelConsumptionRate>10</fuelConsumptionRate>
        <fuelConsumptionWorldMultiplier>0.6</fuelConsumptionWorldMultiplier>
        <fuelCapacity>150</fuelCapacity>
      </li>
      <li Class="Vehicles.CompProperties_VehicleTurrets">
        <!-- 砲塔 -->
        <turrets>
          <li>
            <!--航向机枪-->
            <turretDef>RT_HD2RFV_Turret</turretDef>
            <renderProperties>
              <north>(0,-0.1)</north>
              <south>(0,1.4)</south>
              <east>(-0.7,0.7)</east>
              <west>(0.7,0.7)</west>
            </renderProperties>
            <gizmoLabel>main Turret</gizmoLabel>
            <angleRestricted>(280,80)</angleRestricted>
            <aimPieOffset>(0, 0)</aimPieOffset>
            <key>mainTurret</key>
            <drawLayer>0</drawLayer>
          </li>
        </turrets>
      </li>
    </comps>
  </Vehicles.VehicleDef>
  <Vehicles.VehicleTurretDef ParentName="RT_BaseVehicleMG_Medium">
    <defName>RT_HD2RFV_Turret</defName>
    <label>topDT</label>
    <!-- 砲塔的渲染顯示 -->
    <graphicData>
      <texPath>Vehicles/M102FRV/FRVTURRET</texPath>
      <graphicClass>Vehicles.Graphic_Turret</graphicClass>
      <shaderType>CutoutComplexPattern</shaderType>
      <drawSize>(3.2,3.2)</drawSize>
      <layer>1</layer>
    </graphicData>
    <!-- 彈藥與裝填容量相關 -->
    <ammunition>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </ammunition>
    <shotSound>Shot_Autocannon</shotSound>
    <magazineCapacity>100</magazineCapacity>
    <chargePerAmmoCount>0.1</chargePerAmmoCount>
    <reloadTimer>4.5</reloadTimer>
    <genericAmmo>true</genericAmmo>
    <!-- 射程與射界相關 -->
    <rotationSpeed>2</rotationSpeed>
    <!-- 射擊相關 -->
    <warmUpTimer>1.5</warmUpTimer>
    <projectileOffset>1</projectileOffset>
    <!-- 出膛前後偏移，主要是能讓子彈能從炮口飛出去 -->
    <projectileShifting>
      <!-- 出膛左右偏移，多砲管可以根據list來回切 -->
      <!-- <li>-1</li> -->
      <li>0</li>
    </projectileShifting>
    <recoil Inherit="false">
      <distanceTotal>0</distanceTotal>
      <distancePerTick>0</distancePerTick>
      <speedMultiplierPostRecoil>0</speedMultiplierPostRecoil>
    </recoil>
  </Vehicles.VehicleTurretDef>
</Defs>