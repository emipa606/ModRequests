<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Vehicle -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleDef[defName="RT_HD2FRV_Vehicle"]/statBases/ArmorRating_Blunt</xpath>
    <value>
      <ArmorRating_Blunt>30</ArmorRating_Blunt>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleDef[defName="RT_HD2FRV_Vehicle"]/statBases/ArmorRating_Sharp</xpath>
    <value>
      <ArmorRating_Sharp>15</ArmorRating_Sharp>
    </value>
  </Operation>
  <!--Roof Armor-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleDef[defName="RT_HD2FRV_Vehicle"]/components/li[key="EngineHood" or key="Roof"]/health</xpath>
    <value>
      <health>280</health>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleDef[defName="RT_HD2FRV_Vehicle"]/components/li[key="EngineHood" or key="Roof"]/armor</xpath>
    <value>
      <armor>
        <ArmorRating_Blunt>140</ArmorRating_Blunt>
        <ArmorRating_Sharp>50</ArmorRating_Sharp>
      </armor>
    </value>
  </Operation>
  <!--Rear Armor-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleDef[defName="RT_HD2FRV_Vehicle"]/components/li[key="LeftDoorPanel" or key="RightDoorPanel" or key="FrontBumper" or key="RearBumper"]/health</xpath>
    <value>
      <health>220</health>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleDef[defName="RT_HD2FRV_Vehicle"]/components/li[key="LeftDoorPanel" or key="RightDoorPanel" or key="FrontBumper" or key="RearBumper"]/armor</xpath>
    <value>
      <armor>
        <ArmorRating_Blunt>700</ArmorRating_Blunt>
        <ArmorRating_Sharp>90</ArmorRating_Sharp>
      </armor>
    </value>
  </Operation>
  <!--Various exposed metallic stuff-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleDef[defName="RT_HD2FRV_Vehicle"]/components/li[key="LeftFrontWheel" or key="RightFrontWheel" or key="LeftRearWheel" or key="RightRearWheel"]/armor</xpath>
    <value>
      <armor>
        <ArmorRating_Sharp>20</ArmorRating_Sharp>
        <ArmorRating_Blunt>70</ArmorRating_Blunt>
      </armor>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/Vehicles.VehicleDef[defName="RT_HD2FRV_Vehicle"]/components/li[key="LeftFrontWheel" or key="RightFrontWheel" or key="LeftRearWheel" or key="RightRearWheel"]/health</xpath>
    <value>
      <health>80</health>
    </value>
  </Operation>
</Patch>