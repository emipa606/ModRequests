<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BenchBase">
        <defName>COMIGO_PrimitiveCrushingSpot</defName>
        <label>primitive crushing spot</label>
        <description>A designated spot with a club to crush grains into flour or smash sugarcanes to get juice.</description>
        <thingClass>Building_WorkTable_HeatPush</thingClass>
        <graphicData>
            <texPath>Things/Building/Production/PrimitiveGrainCrusher</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(1.0,1.0)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <costStuffCount>40</costStuffCount>
        <stuffCategories>
            <li>Stony</li>
            <li>Woody</li>
            <li>Metallic</li>
        </stuffCategories>
        <altitudeLayer>Building</altitudeLayer>
        <fillPercent>0.0</fillPercent>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <WorkToBuild>600</WorkToBuild>
            <MaxHitPoints>80</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
        </statBases>
        <size>(1,1)</size>
        <designationCategory>Production</designationCategory>
        <passability>PassThroughOnly</passability>
        <pathCost>35</pathCost>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <surfaceType>Item</surfaceType>
        <recipes>
            <li>COMIGO_CrushGrains</li>
            <li>COMIGO_CrushGrains_Bulk</li>
            <li>COMIGO_MakeSugarcane_Crushing</li>
            <li>COMIGO_MakeSugarcane_Crushing_Bulk</li>
        </recipes>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
        </building>
        <placeWorkers>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
    </ThingDef>
</Defs>