<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="VCE_Wheat"]/plant</xpath>
        <success>Normal</success>
        <value>
            <immatureGraphicPath>Things/Plant/Immature/VCE_WheatImmature</immatureGraphicPath>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="VCE_Wheat"]/description</xpath>
        <value>
            <description>An amber cereal plant that takes almost an entire growing season to come to fruition. While fragile and time-consuming, this wheat can be milled or crushed into flour that can be stored for a long time and used in a variety of dishes, or can be simply cooked into a porridge.</description>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="VCE_Wheat"]/plant/harvestedThingDef</xpath>
        <value>
            <harvestedThingDef>COMIGO_WheatGrain</harvestedThingDef>
        </value>
    </Operation>
</Patch>