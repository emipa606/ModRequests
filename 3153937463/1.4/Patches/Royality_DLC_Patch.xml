<?xml version="1.0" encoding="utf-8" ?>

<!-- To prevent goddamn empire from being AnGeRy at poor you for no reason-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Royalty</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs/FactionDef[defName = "Empire"]/permanentEnemyToEveryoneExcept</xpath>
            <value>
                <li>PlayerLC_LucarioTribal</li>
				<li>PlayerLC_LucarioTribalNoTech</li>
				<li>PlayerLC_LucarioIndustrial</li>
				<li>PlayerLC_LucarioIndustrialNoTech</li>
            </value>
        </match>
    </Operation>
</Patch>