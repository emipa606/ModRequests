<?xml version="1.0" encoding="utf-8" ?>

<Patch>
<!-- LTS Furnishing -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[LTS]Furnishing</li>
        </mods>
        
        <match Class="PatchOperationSequence">
            <operations>
                 
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LTS_SimpleDoorFrame"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>LTSFurnishing/SimpleDoorFrame</texPath>
                    </value>
                </li>    
          
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LTS_SimpleLargeDoorFrame"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>LTSFurnishing/SimpleLargeDoorFrame</texPath>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LTS_FuturisticDoorFrame"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>LTSFurnishing/FuturisticDoorFrame</texPath>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LTS_FuturisticLargeDoorFrame"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>LTSFurnishing/FuturisticLargeDoorFrame</texPath>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LTS_ArchWood"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>LTSFurnishing/ArchedWayWood</texPath>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LTS_LargeArchStone"]/graphicData/drawOffsetSouth</xpath>
                    <value>
                        <drawOffsetSouth>(-0.05,0,0.3)</drawOffsetSouth>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LTS_ArchStone"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>LTSFurnishing/ArchedWayStone</texPath>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LTS_LargeArchStone"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>LTSFurnishing/StoneArch</texPath>
                    </value>
                </li>

              </operations>
        </match>        
    </Operation>
</Patch>