<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<AbilityDef Abstract="True" Name="GS_SelfTargetAbilities">
		<jobDef>CastAbilityOnThing</jobDef>
		<targetRequired>False</targetRequired>
		<canUseAoeToGetTargets>False</canUseAoeToGetTargets>
		<stunTargetWhileCasting>True</stunTargetWhileCasting>
		<showPsycastEffects>False</showPsycastEffects>
		<displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
		<disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
		<hotKey>Misc12</hotKey>
		<verbProperties>
			<verbClass>Verb_CastAbility</verbClass>
			<warmupTime>0.5</warmupTime>
			<drawAimPie>False</drawAimPie>
			<requireLineOfSight>False</requireLineOfSight>
			<targetParams>
				<canTargetSelf>true</canTargetSelf>
				<canTargetPawns>false</canTargetPawns>
				<canTargetBuildings>false</canTargetBuildings>
				<canTargetAnimals>false</canTargetAnimals>
				<canTargetHumans>false</canTargetHumans>
				<canTargetMechs>false</canTargetMechs>
			</targetParams>
		</verbProperties>
	</AbilityDef>

	<AbilityDef ParentName="GS_SelfTargetAbilities">
		<defName>GS_ChargeBoostA</defName>
		<label>Synaptic Accelerator</label>
		<abilityClass>GS_Core.Ability_ChargeBoost</abilityClass>
		<description>Drains fuel to boost movement and reaction speed.</description>
		<iconPath>UI/Icons/Genes/GS_Powered_Charge</iconPath>
		<cooldownTicksRange>300</cooldownTicksRange>
		<hostile>false</hostile>
		<casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
		<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
	</AbilityDef>
	
	<AbilityDef ParentName="GS_SelfTargetAbilities">
		<defName>GS_OverdriveA</defName>
		<label>Cybernetic Overcharge</label>
		<abilityClass>GS_Core.Ability_Overdrive</abilityClass>
		<description>Drains fuel to increase weapon power and effectiveness.</description>
		<iconPath>UI/Icons/Genes/GS_Powered_Overdrive</iconPath>
		<cooldownTicksRange>300</cooldownTicksRange>
		<hostile>false</hostile>
		<casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
		<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
	</AbilityDef>
	
	<AbilityDef ParentName="GS_SelfTargetAbilities">
		<defName>GS_GuardianA</defName>
		<label>Guardian Protocols</label>
		<abilityClass>GS_Core.Ability_Guardian</abilityClass>
		<description>Drains fuel to activate advanced defensive suite.</description>
		<iconPath>UI/Icons/Genes/GS_Powered_Guardian</iconPath>
		<cooldownTicksRange>300</cooldownTicksRange>
		<hostile>false</hostile>
		<casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
		<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
	</AbilityDef>
	
	<AbilityDef ParentName="GS_SelfTargetAbilities">
		<defName>GS_Powered_PlasmaVentA</defName>
		<label>Plasma Vent</label>
		<cooldownTicksRange>3000</cooldownTicksRange>
		<description>Vent superheated gasses generated by this person's internal fuel cells, buffeting and igniting everything around them.</description>
		<iconPath>UI/Icons/Genes/GS_Powered_VentPlas</iconPath>
		<aiCanUse>true</aiCanUse>
		<ai_SearchAOEForTargets>true</ai_SearchAOEForTargets>
		<verbProperties>
			<verbClass>Verb_CastAbility</verbClass>
			<warmupTime>1</warmupTime>
			<requireLineOfSight>false</requireLineOfSight>
			<range>8</range>
			<drawAimPie>false</drawAimPie>      
		</verbProperties>
		<comps>
			<li Class="GS_Core.CompProperties_AbilitySelfBomb">
				<radius>8</radius>
				<damageType>Flame</damageType>
				<damageAmount>25</damageAmount>
				<damagePenetration>10</damagePenetration>
				<thingCreated>Filth_Ash</thingCreated>
				<thingCreatedChance>25</thingCreatedChance>
				<chanceToStartFire>80</chanceToStartFire>
				<damageSelf>false</damageSelf>
			</li>	
			<li Class="GS_Core.CompProperties_AbilityFuelCost">
				<FuelCost>0.25</FuelCost>
			</li>
		</comps>
	</AbilityDef>
	
	<AbilityDef ParentName="GS_SelfTargetAbilities">
		<defName>GS_Powered_ToxVentA</defName>
		<label>Tox Vent</label>
		<cooldownTicksRange>3000</cooldownTicksRange>
		<description>Vent toxic gasses processed by this person's internal fuel cells, poisoning everything around them.</description>
		<iconPath>UI/Icons/Genes/GS_Powered_VentTox</iconPath>
		<aiCanUse>true</aiCanUse>
		<ai_SearchAOEForTargets>true</ai_SearchAOEForTargets>
		<verbProperties>
			<verbClass>Verb_CastAbility</verbClass>
			<warmupTime>1</warmupTime>
			<requireLineOfSight>false</requireLineOfSight>
			<range>12</range>
			<drawAimPie>false</drawAimPie>      
		</verbProperties>
		<comps>
			<li Class="GS_Core.CompProperties_AbilitySelfBomb">
				<radius>10</radius>
				<damageType>ToxGas</damageType>
				<damageAmount>5</damageAmount>
				<damageFalloff>true</damageFalloff>
				<gasType>ToxGas</gasType>
				<damageSelf>false</damageSelf>
			</li>	
			<li Class="GS_Core.CompProperties_AbilityFuelCost">
				<FuelCost>0.25</FuelCost>
			</li>
		</comps>
	</AbilityDef>
	
	<AbilityDef ParentName="GS_SelfTargetAbilities">
		<defName>GS_Powered_EMPVentA</defName>
		<label>EMP Discharge</label>
		<cooldownTicksRange>3000</cooldownTicksRange>
		<description>Detonate an electrical discharge powered by this person's fuel cells, stunning all machines around them.</description>
		<iconPath>UI/Icons/Genes/GS_Powered_VentEMP</iconPath>
		<aiCanUse>true</aiCanUse>
