<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<FactionDef ParentName="FactionBase" Name="Dreadfleet">
<defName>Dreadfleet</defName>
<label>dreadfleet</label>
<description>Ultratech waster pirates. A coalition of spacefaring slavers, mechanitors, drug runners and raiders lorded over by luciferium kingpins, the dreadfleet grows slaves and harvests rimworlds for arcotechnology and warm bodies to toil in mines and industry planetside.\n\nDreadfleet raiders are extremely well armed and will attack colonies either in search of treasure or simply for sport. Though few in number, these pirates are incredibly deadly.\n\nDreadfleet settlements are overwhelmingly heavily defended and they will not trade.</description>
    <pawnSingular>corsair</pawnSingular>
    <pawnsPlural>corsairs</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
<!--    <settlementGenerationWeight>1</settlementGenerationWeight> -->
	<hidden>true</hidden>
    <hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
	<disallowedRaidStrategies>
	<li>StageThenAttack</li>
	<li>ImmediateAttack</li>
	<li>ImmediateAttackSmart</li>
	<li>ImmediateAttackBreachingSmart</li>
	</disallowedRaidStrategies>
	<autoFlee>false</autoFlee>
	<permanentEnemy>true</permanentEnemy>
    <leaderTitle>Archon</leaderTitle>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(300,  0)</li>
        <li>(700,  1)</li>
        <li>(1400, 1.8)</li>
        <li>(2800, 2.2)</li>
        <li>(4000, 2.6)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <colorSpectrum>
      <li>(0.5, 0.0, 0.0)</li>
    </colorSpectrum>
    <factionIconPath>World/WorldObjects/Expanding/PirateOutpost</factionIconPath>
    <techLevel>Ultra</techLevel>
<configurationListOrderPriority>500</configurationListOrderPriority>
<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <factionNameMaker>NamerFactionDreadfleet</factionNameMaker>
    <settlementNameMaker>NamerSettlementPirate</settlementNameMaker>
    <allowedCultures><li>Kriminul</li></allowedCultures>
	<requiredMemes>
	<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
	<li MayRequire="Ludeon.RimWorld.Ideology">Transhumanist</li>
	<li MayRequire="Ludeon.RimWorld.Ideology">HumanPrimacy</li>
	<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
	</requiredMemes>
<allowedMemes></allowedMemes>	
    <structureMemeWeights>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">999</Structure_Ideological>
    </structureMemeWeights>
    <xenotypeSet>
      <xenotypeChances>
	<mfaxGaunt>1</mfaxGaunt>
	<mfaxGorerunner>0</mfaxGorerunner>
	<mfaxLiche>0</mfaxLiche>
      </xenotypeChances>
    </xenotypeSet>
    <backstoryFilters>
      <li>
        <categories>
          <li>mfaxDread</li>
          <li>mfaxlowchild</li>
          <li>mfaxhighchild</li>
          <li>mfaxslave</li>
          <li>mfaxgaunt</li>
          <li>mfaxLiche</li>
        </categories>
      </li>
    </backstoryFilters>
    <allowedArrivalTemperatureRange>-100~200</allowedArrivalTemperatureRange>
    <raidLootMaker>DreadfleetRaidLootMaker</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>30</commonality>
        <disallowedStrategies>
          <li>Siege</li>
          <li>ImmediateAttackBreaching</li>
          <li>ImmediateAttackSappers</li>
        </disallowedStrategies>
        <options>
<gorerunnerMelee>10</gorerunnerMelee>
<gauntBurner MayRequire="Ludeon.RimWorld.Anomaly">5</gauntBurner>
<licheMelee>1</licheMelee>
        </options>
      </li>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>30</commonality>
        <disallowedStrategies>
          <li>ImmediateAttackBreaching</li>
          <li>Siege</li>
          <li>ImmediateAttackDroppods</li>
        </disallowedStrategies>
        <options>
<gorerunnerMelee>10</gorerunnerMelee>
<gauntGunner>5</gauntGunner>
<gauntBurner MayRequire="Ludeon.RimWorld.Anomaly">5</gauntBurner>
<gauntLauncher>5</gauntLauncher>
<licheMelee>1</licheMelee>
<licheRanged>1</licheRanged>
        </options>
      </li>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>30</commonality>
        <disallowedStrategies>
          <li>ImmediateAttackBreaching</li>
          <li>ImmediateAttackSappers</li>
          <li>ImmediateAttackDroppods</li>
        </disallowedStrategies>
        <options>
<gauntSniper>5</gauntSniper>
<licheRanged>1</licheRanged>
        </options>
      </li>
<li>
<kindDef>Combat</kindDef>
<commonality>30</commonality>
<disallowedStrategies>
<li>Siege</li>
<li>ImmediateAttackSappers</li>
<li>ImmediateAttackDroppods</li>
</disallowedStrategies>
<options>
<gauntGunner>5</gauntGunner>
<gauntBurner MayRequire="Ludeon.RimWorld.Anomaly">5</gauntBurner>
<gauntSniper>5</gauntSniper>
<gauntLauncher>5</gauntLauncher>
<gauntThumper>10</gauntThumper>
<licheRanged>1</licheRanged>
</options>
</li>
<li>
        <kindDef>Settlement</kindDef>
        <options>
<gauntDefender>5</gauntDefender>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <dropPodActive>ActiveDropPodMechanoid</dropPodActive>
    <dropPodIncoming>DropPodIncomingMechanoid</dropPodIncoming>
  </FactionDef>

  <ThingSetMakerDef>
    <defName>DreadfleetRaidLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
	<li>Luciferium</li>
	<li>GoJuice</li>
	<li>WakeUp</li>
	<li>Yayo</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>
  
  <RulePackDef>
    <defName>NamerFactionDreadfleet</defName>
<rulePack>
<rulesStrings>
<li>r_name->The Dreadfleet</li>
</rulesStrings>
</rulePack>
</RulePackDef>
</Defs>
