<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Playable Kobolds</li>
			<li>Playable Kobolds (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationTest">
					<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Kobold"]/alienRace/generalSettings/humanRecipeImport</xpath>
					<success>Invert</success>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Kobold"]/alienRace/generalSettings</xpath>
					<value>
						<humanRecipeImport>true</humanRecipeImport>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>