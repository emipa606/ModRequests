<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="addedPartAdvanced">
        <defName>AdvancedBionicArgoTail</defName>
        <label>advanced bionic argonian tail</label>
        <labelNoun>an advanced bionic argonian tail</labelNoun>
        <description>An installed advanced bionic argonian tail.</description>
        <descriptionHyperlinks><ThingDef>EPIA_AdvancedBionicTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>EPIA_AdvancedBionicTail</spawnThingOnRemoved>
        <addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.35</partEfficiency>
        </addedPartProps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.25</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.25</offset>
					</li>
				</capMods>
			</li>
		</stages>
    </HediffDef>

    <RecipeDef ParentName="EPIASurgeryAdvancedBionic">
        <defName>InstallAdvancedBionicArgoTail</defName>
        <label>install advanced bionic argonian tail</label>
        <description>Installs an advanced bionic argonian tail.</description>
        <descriptionHyperlinks>
			<ThingDef>EPIA_AdvancedBionicTail</ThingDef>
			<HediffDef>AdvancedBionicArgoTail</HediffDef>
		</descriptionHyperlinks>
        <jobString>Installing advanced bionic argonian tail.</jobString>
        <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>EPIA_AdvancedBionicTail</li>
                </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>EPIA_AdvancedBionicTail</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>ArgonianTail</li>
        </appliedOnFixedBodyParts>
        <addsHediff>AdvancedBionicArgoTail</addsHediff>
    </RecipeDef>

</Defs>