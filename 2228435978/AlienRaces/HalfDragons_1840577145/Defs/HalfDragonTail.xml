<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="addedPartAdvanced">
        <defName>MGDragon_AdvancedBionicTail</defName>
        <label>advanced Half-Dragon tail</label>
        <labelNoun>an advanced bionic Half-Dragon tail</labelNoun>
        <description>An installed advanced bionic Half-Dragon tail.</description>
        <descriptionHyperlinks><ThingDef>EPIA_AdvancedBionicTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>EPIA_AdvancedBionicTail</spawnThingOnRemoved>
        <addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.35</partEfficiency>
        </addedPartProps>
    </HediffDef>

    <RecipeDef ParentName="EPIASurgeryAdvancedBionic">
        <defName>MGDragon_InstallAdvancedBionicTail</defName>
        <label>install advanced bionic Half-Dragon tail</label>
        <description>Installs an advanced bionic Half-Dragon tail.</description>
        <descriptionHyperlinks>
			<ThingDef>EPIA_AdvancedBionicTail</ThingDef>
			<HediffDef>MGDragon_AdvancedBionicTail</HediffDef>
		</descriptionHyperlinks>
        <jobString>Installing advanced bionic Half-Dragon tail.</jobString>
        <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>EPIA_AdvancedBionicTail</li>
                </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>EPIA_AdvancedBionicTail</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>MGDragonTail</li>
        </appliedOnFixedBodyParts>
        <addsHediff>MGDragon_AdvancedBionicTail</addsHediff>
    </RecipeDef>

</Defs>