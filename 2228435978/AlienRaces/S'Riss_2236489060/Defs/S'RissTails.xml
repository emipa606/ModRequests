<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Install natural rat tail -->

	<RecipeDef ParentName="SurgeryInstallBodyPartNaturalBase">
		<defName>SRiss_InstallNaturalRatTail</defName>
		<label>install rat tail</label>
		<description>Install a biological rat tail.</description>
		<descriptionHyperlinks><ThingDef>RatTail</ThingDef></descriptionHyperlinks>
		<jobString>Installing rat tail.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RatTail</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RatTail</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>SRissTail</li>
		</appliedOnFixedBodyParts>
	</RecipeDef>

	<!-- False S'Riss tail-->

	<HediffDef ParentName="AddedBodyPartBase">
        <defName>SRiss_SimpleRatTail</defName>
        <label>false S'Riss tail</label>
        <labelNoun>a false S'Riss tail</labelNoun>
        <description>An installed false S'Riss tail.</description>
        <descriptionHyperlinks><ThingDef>SimpleRatTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>SimpleRatTail</spawnThingOnRemoved>
        <addedPartProps>
			<solid>true</solid>
			<partEfficiency>0.8</partEfficiency>
        </addedPartProps>
    </HediffDef>

	<RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
		<defName>SRiss_InstallSimpleRatTail</defName>
		<label>install false tail</label>
		<description>Install a false tail.</description>
		<descriptionHyperlinks>
			<ThingDef>SimpleRatTail</ThingDef>
			<HediffDef>SRiss_SimpleRatTail</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing false tail.</jobString>
		<ingredients>
			<li>
				<filter>
				<thingDefs>
					<li>SimpleRatTail</li>
				</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SimpleRatTail</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>SRissTail</li>
		</appliedOnFixedBodyParts>
		<addsHediff>SRiss_SimpleRatTail</addsHediff>
	</RecipeDef>


	<!-- Bionic S'Riss tail-->

	<HediffDef ParentName="AddedBodyPartBase">
        <defName>SRiss_BionicTail</defName>
        <label>bionic S'Riss tail</label>
        <labelNoun>a bionic S'Riss tail</labelNoun>
        <description>An installed bionic S'Riss tail.</description>
        <descriptionHyperlinks><ThingDef>AdvRatTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>AdvRatTail</spawnThingOnRemoved>
        <addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.2</partEfficiency>
        </addedPartProps>
    </HediffDef>

	<RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
		<defName>SRiss_InstallBionicTail</defName>
		<label>install bionic tail</label>
		<description>Install a bionic tail.</description>
		<descriptionHyperlinks>
			<ThingDef>AdvRatTail</ThingDef>
			<HediffDef>SRiss_BionicTail</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing bionic tail.</jobString>
		<ingredients>
			<li>
				<filter>
				<thingDefs>
					<li>AdvRatTail</li>
				</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AdvRatTail</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>SRissTail</li>
		</appliedOnFixedBodyParts>
		<addsHediff>SRiss_BionicTail</addsHediff>
	</RecipeDef>

	<!-- Advanced bionic S'Riss tail-->

	<HediffDef ParentName="addedPartAdvanced">
        <defName>SRiss_AdvancedBionicTail</defName>
        <label>advanced bionic S'Riss tail</label>
        <labelNoun>an advanced bionic S'Riss tail</labelNoun>
        <description>An installed advanced bionic S'Riss tail.</description>
        <descriptionHyperlinks><ThingDef>EPIA_AdvancedBionicTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>EPIA_AdvancedBionicTail</spawnThingOnRemoved>
        <addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.35</partEfficiency>
        </addedPartProps>
    </HediffDef>

    <RecipeDef ParentName="EPIASurgeryAdvancedBionic">
        <defName>SRiss_InstallAdvancedBionicTail</defName>
        <label>install advanced bionic S'Riss tail</label>
        <description>Installs an advanced bionic S'Riss tail.</description>
        <descriptionHyperlinks>
			<ThingDef>EPIA_AdvancedBionicTail</ThingDef>
			<HediffDef>SRiss_AdvancedBionicTail</HediffDef>
		</descriptionHyperlinks>
        <jobString>Installing advanced bionic S'Riss tail.</jobString>
        <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>EPIA_AdvancedBionicTail</li>
                </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>EPIA_AdvancedBionicTail</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>SRissTail</li>
        </appliedOnFixedBodyParts>
        <addsHediff>SRiss_AdvancedBionicTail</addsHediff>
    </RecipeDef>

</Defs>