<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="addedPartAdvanced">
        <defName>MG_AdvancedBionicTail</defName>
        <label>advanced bionic tail</label>
        <labelNoun>an advanced bionic tail</labelNoun>
        <description>An installed advanced bionic tail.</description>
        <descriptionHyperlinks><ThingDef>EPIA_AdvancedBionicTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>EPIA_AdvancedBionicTail</spawnThingOnRemoved>
        <addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.35</partEfficiency>
        </addedPartProps>
    </HediffDef>

    <RecipeDef ParentName="EPIASurgeryAdvancedBionic">
        <defName>MG_InstallAdvancedBionicTail</defName>
        <label>install advanced bionic tail</label>
        <description>Installs an advanced bionic tail.</description>
        <descriptionHyperlinks>
			<ThingDef>EPIA_AdvancedBionicTail</ThingDef>
			<HediffDef>MG_AdvancedBionicTail</HediffDef>
		</descriptionHyperlinks>
        <jobString>Installing advanced bionic tail.</jobString>
        <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>EPIA_AdvancedBionicTail</li>
                </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>EPIA_AdvancedBionicTail</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
			<li>Catgirl_Tail</li>
            <li>Wolfgirl_Tail</li>
            <li>Foxgirl_Tail</li>
            <li>MG_Thrumbogirl_Tail</li>
            <li>MG_Dragon_Tail</li>
        </appliedOnFixedBodyParts>
        <addsHediff>MG_AdvancedBionicTail</addsHediff>
    </RecipeDef>

</Defs>