<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="addedPartAdvanced">
		<defName>AdvancedBionicRaccTail</defName>
		<label>advanced bionic Racc tail</label>
		<description>An installed advanced bionic Racc tail.</description>
        <descriptionHyperlinks><ThingDef>EPIA_AdvancedBionicTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>EPIA_AdvancedBionicTail</spawnThingOnRemoved>
		<addedPartProps>
			<betterThanNatural>true</betterThanNatural>
			<solid>true</solid>
			<partEfficiency>1.25</partEfficiency>
		</addedPartProps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.25</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.25</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

    <RecipeDef ParentName="EPIASurgeryAdvancedBionic">
        <defName>InstallAdvancedBionicRaccTail</defName>
        <label>install advanced bionic Racc tail</label>
        <description>Installs an advanced bionic Racc tail.</description>
        <descriptionHyperlinks>
			<ThingDef>EPIA_AdvancedBionicTail</ThingDef>
			<HediffDef>AdvancedBionicRaccTail</HediffDef>
		</descriptionHyperlinks>
        <jobString>Installing advanced bionic Racc tail.</jobString>
        <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>EPIA_AdvancedBionicTail</li>
                </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>EPIA_AdvancedBionicTail</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>RaccTail</li>
        </appliedOnFixedBodyParts>
        <addsHediff>AdvancedBionicRaccTail</addsHediff>
    </RecipeDef>
</Defs>