<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Expanded Prosthetics and Organ Engineering - Forked</li>
			<li>Expanded Prosthetics, Implants and Augmentations</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="EPIA_AdvancedBionicTail"]/descriptionHyperlinks</xpath>
					<value>
						<RecipeDef>InstallAdvancedBionicXennTail</RecipeDef>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="EPIA_CreateAdvancedBionicTail"]/ingredients/li/filter/thingDefs</xpath>
					<value>
						<li>BionicXennTail</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="EPIA_CreateAdvancedBionicTail"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>BionicXennTail</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="InstallBionicXennTail"]/ingredients/li/filter/thingDefs[li="BionicXennTail"]</xpath>
					<value>
						<li>EPIA_BionicTail</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="InstallBionicXennTail"]/fixedIngredientFilter/thingDefs[li="BionicXennTail"]</xpath>
					<value>
						<li>EPIA_BionicTail</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="EPIA_BionicTail"]/descriptionHyperlinks</xpath>
					<value>
						<RecipeDef>InstallBionicXennTail</RecipeDef>
					</value>
				</li>
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="BionicXennTail"]</xpath>
					<attribute>ParentName</attribute>
					<value>EPIA_DeclutterAlienTail</value>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>Defs/HediffDef[defName="BionicXennTail"]/descriptionHyperlinks</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/HediffDef[defName="BionicXennTail"]/descriptionHyperlinks</xpath>
						<value>
							<descriptionHyperlinks>
								<ThingDef>EPIA_BionicTail</ThingDef>
							</descriptionHyperlinks>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/HediffDef[defName="BionicXennTail"]</xpath>
						<value>
							<descriptionHyperlinks>
								<ThingDef>EPIA_BionicTail</ThingDef>
							</descriptionHyperlinks>
						</value>
					</nomatch>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="BionicXennTail"]/spawnThingOnRemoved</xpath>
					<value>
						<spawnThingOnRemoved>EPIA_BionicTail</spawnThingOnRemoved>
					</value>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>Defs/RecipeDef[defName="InstallBionicXennTail"]/descriptionHyperlinks</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/RecipeDef[defName="InstallBionicXennTail"]/descriptionHyperlinks</xpath>
						<value>
							<descriptionHyperlinks>
								<ThingDef>BionicXennTail</ThingDef>
								<ThingDef>EPIA_BionicTail</ThingDef>
								<HediffDef>BionicXennTail</HediffDef>
							</descriptionHyperlinks>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/RecipeDef[defName="InstallBionicXennTail"]</xpath>
						<value>
							<descriptionHyperlinks>
								<ThingDef>BionicXennTail</ThingDef>
								<ThingDef>EPIA_BionicTail</ThingDef>
								<HediffDef>BionicXennTail</HediffDef>
							</descriptionHyperlinks>
						</value>
					</nomatch>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="BionicXennTail"]/thingSetMakerTags</xpath>
					<match Class="PatchOperationRemove">
						<xpath>Defs/ThingDef[defName="BionicXennTail"]/thingSetMakerTags</xpath>
					</match>
				</li>
			</operations>
		</match>
		<nomatch Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>Defs/HediffDef[defName="AdvancedBionicXennTail" and @ParentName="addedPartAdvanced"]</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>Defs/RecipeDef[defName="InstallAdvancedBionicXennTail" and @ParentName="EPIASurgeryAdvancedBionic"]</xpath>
				</li>
			</operations>
		</nomatch>
	</Operation>

</Patch>