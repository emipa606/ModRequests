<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Bionic tox tail -->

	<HediffDef ParentName="addedPartBionics">
		<defName>BionicToxTail</defName>
		<label>bionic Tox tail</label>
		<description>An installed bionic Tox tail.</description>
        <descriptionHyperlinks><ThingDef>EPIA_BionicTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>EPIA_BionicTail</spawnThingOnRemoved>
		<addedPartProps>
			<betterThanNatural>true</betterThanNatural>
			<solid>true</solid>
			<partEfficiency>1.2</partEfficiency>
		</addedPartProps>
	</HediffDef>

    <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
        <defName>InstallBionicToxTail</defName>
        <label>install bionic Tox tail</label>
        <description>Installs an bionic Tox tail.</description>
        <descriptionHyperlinks>
			<ThingDef>EPIA_BionicTail</ThingDef>
			<HediffDef>BionicToxTail</HediffDef>
		</descriptionHyperlinks>
        <jobString>Installing bionic Tox tail.</jobString>
        <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>EPIA_BionicTail</li>
                </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>EPIA_BionicTail</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>ToxTail</li>
        </appliedOnFixedBodyParts>
        <addsHediff>BionicToxTail</addsHediff>
    </RecipeDef>

	<!-- Advanced bionic tox tail -->

	<HediffDef ParentName="addedPartAdvanced">
		<defName>AdvancedBionicToxTail</defName>
		<label>advanced bionic Tox tail</label>
		<description>An installed advanced bionic Tox tail.</description>
        <descriptionHyperlinks><ThingDef>EPIA_AdvancedBionicTail</ThingDef></descriptionHyperlinks>
        <spawnThingOnRemoved>EPIA_AdvancedBionicTail</spawnThingOnRemoved>
		<addedPartProps>
			<betterThanNatural>true</betterThanNatural>
			<solid>true</solid>
			<partEfficiency>1.35</partEfficiency>
		</addedPartProps>
	</HediffDef>

    <RecipeDef ParentName="EPIASurgeryAdvancedBionic">
        <defName>InstallAdvancedBionicToxTail</defName>
        <label>install advanced bionic Tox tail</label>
        <description>Installs an advanced bionic Tox tail.</description>
        <descriptionHyperlinks>
			<ThingDef>EPIA_AdvancedBionicTail</ThingDef>
			<HediffDef>AdvancedBionicToxTail</HediffDef>
		</descriptionHyperlinks>
        <jobString>Installing advanced bionic Tox tail.</jobString>
        <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>EPIA_AdvancedBionicTail</li>
                </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>EPIA_AdvancedBionicTail</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>ToxTail</li>
        </appliedOnFixedBodyParts>
        <addsHediff>AdvancedBionicToxTail</addsHediff>
    </RecipeDef>

	<!-- Cosmetic tox wing -->

	<HediffDef ParentName="addedPartSimple">
		<defName>CosmeticToxWing</defName>
		<label>cosmetic tox wing</label>
		<description>An installed tox wing.</description>
		<descriptionHyperlinks><ThingDef>CosmeticToxWing</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>CosmeticToxWing</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0.8</partEfficiency>
		</addedPartProps>
	</HediffDef>

	<ThingDef ParentName="BodyPartProstheticMakeableBase">
		<defName>CosmeticToxWing</defName>
		<label>cosmetic tox wing</label>
		<description>An artifical tox wing that serves as a cosmetic replacement.</description>
		<descriptionHyperlinks><RecipeDef>InstallCosmeticToxWing</RecipeDef></descriptionHyperlinks>
		<costList>
			<Steel>30</Steel>
		</costList>
		<statBases>
			<Mass>0.3</Mass>
		</statBases>
	</ThingDef>

	<RecipeDef ParentName="SurgeryInstallBodyPartProstheticBase">
		<defName>InstallCosmeticToxWing</defName>
		<label>install cosmetic tox wing</label>
		<description>Installs cosmetic tox wing.</description>
		<descriptionHyperlinks>
			<ThingDef>CosmeticToxWing</ThingDef>
			<HediffDef>CosmeticToxWing</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing cosmetic tox wing.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CosmeticToxWing</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>CosmeticToxWing</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>LWing</li>
			<li>RWing</li>
		</appliedOnFixedBodyParts>
		<addsHediff>CosmeticToxWing</addsHediff>
	</RecipeDef>

</Defs>