<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="addedPartAdvanced">
		<defName>Slither_AdvancedBionicTail</defName>
		<label>advanced bionic slither tail</label>
		<labelNoun>an advanced bionic slither tail</labelNoun>
		<description>A highly advanced artificial Slither tail. It is fitted with exceptionally sturdy and powerful motors and gyroscopes, giving it even greater strength, stability, and durability than a natural tail.</description>
		<descriptionHyperlinks><ThingDef>EPIA_AdvancedBionicTail</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>EPIA_AdvancedBionicTail</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.35</partEfficiency>
		</addedPartProps>
	</HediffDef>

	<RecipeDef ParentName="EPIASurgeryAdvancedBionic">
		<defName>Slither_InstallAdvancedBionicTail</defName>
		<label>install advanced bionic slither tail</label>
		<description>Installs an advanced bionic slither tail.</description>
		<descriptionHyperlinks>
			<ThingDef>EPIA_AdvancedBionicTail</ThingDef>
			<HediffDef>Slither_AdvancedBionicTail</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing advanced bionic slither tail.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>EPIA_AdvancedBionicTail</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>EPIA_AdvancedBionicTail</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>SlitherTail</li>
		</appliedOnFixedBodyParts>
		<addsHediff>Slither_AdvancedBionicTail</addsHediff>
	</RecipeDef>

</Defs>