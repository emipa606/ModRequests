<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationConditional">
    <xpath>
      Defs/StatDef[
      @Name="AccuracyBase"
      or @Name="ArmorRatingBase"
      or @Name="InsulationBase"]/parts
    </xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>
        Defs/StatDef[
        @Name="AccuracyBase"
        or @Name="ArmorRatingBase"
        or @Name="InsulationBase"]
      </xpath>
      <value>
        <parts />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>
      Defs/StatDef[
      @Name="AccuracyBase"
      or @Name="ArmorRatingBase"
      or @Name="InsulationBase"]/parts
    </xpath>
    <value>
      <li Class="StatPart_Health">
        <curve>
          <points>
            <li>(0.0, 0.0)</li>
            <li>(0.25, 0.5)</li>
            <li>(0.9, 1.0)</li>
          </points>
        </curve>
      </li>
    </value>
  </Operation>

</Patch>