
<Defs>
    <DamageDef>
		<defName>AP_TumbleWeed_BurnDamage</defName>
		<label>permanent burn</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<externalViolence>true</externalViolence>
		<deathMessage>{0} burnt out.</deathMessage>
		<hediff>AP_TumbleWeed_BurnHediff</hediff>
		<hediffSolid>AP_TumbleWeed_BurnHediff</hediffSolid>
		<harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
		<minDamageToFragment>10</minDamageToFragment>
		<defaultDamage>15</defaultDamage>
		<defaultArmorPenetration>2</defaultArmorPenetration>
		<armorCategory>Heat</armorCategory>
		<combatLogRules>Damage_Flame</combatLogRules>
	</DamageDef>

    <HediffDef ParentName="InjuryBase">
		<defName>AP_TumbleWeed_BurnHediff</defName>
		<label>burnt thorns</label>
		<description>A thorn was burnt.</description>
		<labelNoun>a burnt thorn</labelNoun>
		<comps>
			<li Class="HediffCompProperties_GetsPermanent">
				<permanentLabel>burnt thorns</permanentLabel>
				<becomePermanentChanceFactor>100</becomePermanentChanceFactor>
			</li>
        
		</comps>
		<injuryProps>
			<canMerge>true</canMerge>
			<destroyedLabel>Burned off</destroyedLabel>
			<destroyedOutLabel>Burned out</destroyedOutLabel>
		</injuryProps>
	</HediffDef>
</Defs>