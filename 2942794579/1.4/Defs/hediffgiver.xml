<Defs>
  <MentalStateDef ParentName="BaseMentalState">
    <defName>AP_Tumbleweed_Berserk</defName>
    <stateClass>AP_TumbleWeed.MentalState_Berserkweed</stateClass>
    <label>moved by wind</label>
    <category>Aggro</category>
    <blockInteractionInitiationExcept>
      <li>Insult</li>
    </blockInteractionInitiationExcept>
    <blockInteractionRecipientExcept>
      <li>Insult</li>
    </blockInteractionRecipientExcept>
    <blockRandomInteraction>true</blockRandomInteraction>
    <moodRecoveryThought></moodRecoveryThought>
    <blockNormalThoughts>true</blockNormalThoughts>
    <nameColor>(0.9,0.2,0.5)</nameColor>
    <beginLetter>d</beginLetter>
    <beginLetterDef>ThreatSmall</beginLetterDef>
    <minTicksBeforeRecovery>2100</minTicksBeforeRecovery>
    <maxTicksBeforeRecovery>2200</maxTicksBeforeRecovery>
    <recoveryMtbDays>0.3</recoveryMtbDays>
    <recoveryMessage>d.</recoveryMessage>
    <baseInspectLine>Being moved by the wind</baseInspectLine>
    <stateEffecter>Berserk</stateEffecter>
    <tale>MentalStateBerserk</tale>
    <recoverFromSleep>true</recoverFromSleep>
    <inCaravanCanDo>false</inCaravanCanDo>
  </MentalStateDef>

  <HediffDef>
    <defName>AP_Tumbleweed_Hediff</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>Wind</label>
    <labelNoun>wind</labelNoun>
    <description>wind</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.8</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.50</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffGiverSetDef>
    <defName>AP_Tumbleweed_hediffgiverset</defName>
    <hediffGivers>
      <!-- Special -->
      <li Class="AP_TumbleWeed.HediffGiver_RandomBerserk">
        <hediff>AP_Tumbleweed_Hediff</hediff>
        <partsToAffect>
          <li>AP_Tumbleweed_brancheslimb</li>
        </partsToAffect>
        <allowOnLodgers>false</allowOnLodgers>
        <allowOnQuestRewardPawns>false</allowOnQuestRewardPawns>
        <allowOnQuestReservedPawns>false</allowOnQuestReservedPawns>
        <allowOnBeggars>false</allowOnBeggars>
        <ageFractionMtbDaysCurve>
          <points>
            <li>(1, 0.666)</li>
          </points>
        </ageFractionMtbDaysCurve>
      </li>
    </hediffGivers>
  </HediffGiverSetDef>
</Defs>