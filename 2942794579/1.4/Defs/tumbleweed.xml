<Defs>
 <FleshTypeDef>
    <defName>AP_Tumbleweed_Fleshtype</defName>
    <corpseCategory>CorpsesAnimal</corpseCategory>
    <damageEffecter>Damage_HitMechanoid</damageEffecter>
    <genericWounds>
      <li>
        <texture>Things/Pawn/Wounds/WoundA</texture>
        <color>25,24,23</color>
      </li>
      <li>
        <texture>Things/Pawn/Wounds/WoundB</texture>
        <color>25,24,23</color>
      </li>
      <li>
        <texture>Things/Pawn/Wounds/WoundC</texture>
        <color>25,24,23</color>
      </li>
    </genericWounds>
  </FleshTypeDef>
  <ThingDef ParentName="BaseFilth">
    <defName>AP_TumbleWeed_Blood</defName>
    <label>wooden filth</label>
    <statBases>
      <Beauty>-20</Beauty>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <graphicData>
      <texPath>Things/Filth/Spatter</texPath>
      <color>(173, 134, 108, 1)</color>
    </graphicData>
    <filth>
      <ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
      <disappearsInDays>2~3</disappearsInDays>
      <rainWashes>true</rainWashes>
      <cleaningWorkToReduceThickness>20</cleaningWorkToReduceThickness>
      <canFilthAttach>true</canFilthAttach>
      <cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
    </filth>
  </ThingDef>
  <ThingDef ParentName="AnimalThingBase">
    <defName>AP_TumbleWeed_Race</defName>
    <label>tumbleweed</label>
    <description>An evolutionary descendant of plants found on Earth, this rugged and plentiful plant seems to spring up everywhere. Records claim their seeds were mixed in grain cargos long ago and made their way across the Rim. Many tribes and settlers use them as a source of wood, just mind the thorns.</description>
    <butcherProducts>
      <WoodLog>20</WoodLog>
    </butcherProducts>
    <statBases>
      <MoveSpeed>4</MoveSpeed>
      <MarketValue>40</MarketValue>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
      <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
      <InjuryHealingFactor>0</InjuryHealingFactor>
      <ImmunityGainSpeedFactor>0</ImmunityGainSpeedFactor>
      <ImmunityGainSpeed>0</ImmunityGainSpeed>
      <FilthRate>10</FilthRate>
      <PainShockThreshold>0.99</PainShockThreshold>
      <IncomingDamageFactor>1</IncomingDamageFactor>
      <MeatAmount>0</MeatAmount>
      <LeatherAmount>0</LeatherAmount>
    </statBases>
    <uiIconScale>1.1</uiIconScale>
    <tools>
      <li>
        <label>branch</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.3</cooldownTime>
        <linkedBodyPartsGroup>AP_Tumbleweed_scratchbodygroup</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>thorn</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.3</cooldownTime>
        <linkedBodyPartsGroup>AP_Tumbleweed_thornbodygroup</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>AP_Tumbleweed_body</body>
      <thinkTreeMain>AP_Tumbleweed_Thinktree</thinkTreeMain>
      <wildBiomes>
        <IceSheet>0.00</IceSheet>
        <SeaIce>0.00</SeaIce>
        <ColdBog>0.00</ColdBog>
        <Desert>15</Desert>
        <BorealForest>0.1</BorealForest>
        <Tundra>0.08</Tundra>
        <TemperateForest>0.5</TemperateForest>
        <TemperateSwamp>1</TemperateSwamp>
        <TropicalRainforest>0.5</TropicalRainforest>
        <TropicalSwamp>1</TropicalSwamp>
        <AridShrubland>9</AridShrubland>
      </wildBiomes>

      <maxPreyBodySize>0.35</maxPreyBodySize>
      <baseBodySize>0.25</baseBodySize>
      <baseHungerRate>0</baseHungerRate>
      <baseHealthScale>1</baseHealthScale>
      <foodType>VegetableOrFruit,Seed,VegetarianAnimal,VegetarianRoughAnimal</foodType>
      <deathActionWorkerClass>AnimalBehaviours.DeathActionWorker_DropOnDeath</deathActionWorkerClass>
      <fleshType>AP_Tumbleweed_Fleshtype</fleshType>
      <bloodDef>AP_TumbleWeed_Blood</bloodDef>
      <meatLabel>branch</meatLabel>
      <wildness>1</wildness>
      <petness>0</petness>
      <needsRest>false</needsRest>
      <hasGenders>false</hasGenders>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <nameOnTameChance>0</nameOnTameChance>
      <lifeExpectancy>80</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Cobra_Wounded</soundWounded>
          <soundDeath>Pawn_Cobra_Death</soundDeath>
          <soundCall>Pawn_Cobra_Call</soundCall>
          <soundAngry>Pawn_Cobra_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <headPosPerRotation>
        <li>(-0.03, 0, 0.35)</li>
        <li>(0.03, 0, 0.36)</li>
        <li>(-0.05, 0, 0.28)</li>
        <li>(-0.03, 0, 0.36)</li>
      </headPosPerRotation>
      <hediffGiverSets>
        <li>AP_Tumbleweed_hediffgiverset</li>
      </hediffGiverSets>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
    <comps>
      <li Class="AnimalBehaviours.CompProperties_HighlyFlammable">
        <hediffToInflict>AP_TumbleWeed_BurnDamage</hediffToInflict>
      </li>
      <li Class="AnimalBehaviours.CompProperties_Untameable">
        <factionToReturnTo></factionToReturnTo>
      </li>
      <li Class="AnimalBehaviours.CompProperties_DoesntFlee"/>
    </comps>

  </ThingDef>

