<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Core Game Animals -->

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName = "Squirrel"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Coarse</leatherDef>
      </value>
   </Operation>

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName = "GuineaPig"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Luxe</leatherDef>
      </value>
   </Operation>

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName = "Monkey"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Soft</leatherDef>
      </value>
   </Operation>

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[contains(@Name,"BaseHare")]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Soft</leatherDef>
      </value>
   </Operation>

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName = "Capybara"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Coarse</leatherDef>
      </value>
   </Operation>

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Raccoonskin Cap(resurrected)</li>
       </mods>
       <nomatch Class="PatchOperationReplace">
           <xpath>/Defs/ThingDef[defName = "Raccoon"]/race/leatherDef</xpath>
           <value>
             <leatherDef>Leather_Coarse</leatherDef>
           </value>
       </nomatch>
   </Operation>

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName = "Rat"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Coarse</leatherDef>
      </value>
   </Operation>

</Patch>
