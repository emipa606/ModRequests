<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Vanilla Animals Expanded -->

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Vanilla Animals Expanded — Australia</li>
    </mods>
    <match Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "AEXP_Koala"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Soft</leatherDef>
      </value>
    </match>
</Operation>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Vanilla Animals Expanded — Tropical Rainforest</li>
    </mods>
    <match Class="PatchOperationReplace">
     	 <xpath>/Defs/ThingDef[defName = "AEXP_Lemur"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Soft</leatherDef>
      </value>
    </match>
</Operation>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Vanilla Animals Expanded — Boreal Forest</li>
    </mods>
    <match Class="PatchOperationReplace">
      	<xpath>/Defs/ThingDef[defName = "AEXP_Otter"]/race/leatherDef</xpath>
      <value>
         <leatherDef>Leather_Luxe</leatherDef>
      </value>
    </match>
</Operation>


</Patch>
