<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Erin's Critters Animals -->

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Erin's Critter Collection</li>
       </mods>
       <match Class="PatchOperationReplace">
         <xpath>/Defs/ThingDef[defName="Pika"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_Soft</leatherDef>
         </value>
       </match>
   </Operation>

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Erin's Critter Collection</li>
       </mods>
       <match Class="PatchOperationReplace">
         <xpath>/Defs/ThingDef[defName="Pallas_cat"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_Soft</leatherDef>
         </value>
       </match>
   </Operation>



</Patch>
