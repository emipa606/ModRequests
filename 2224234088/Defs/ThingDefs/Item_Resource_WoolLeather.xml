<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ======================= Luxe Fur =============================== -->

  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Luxe</defName>
    <label>luxe fur</label>
    <description>Fluffy, soft pieces of the highest quality animal fur. Snuggly and warm, Luxe Fur is perfect for cozy bed-spreads.</description>
    <graphicData>
      <color>(192,192,192)</color>
    </graphicData>
    <statBases>
      <MarketValue>9.7</MarketValue>
      <StuffPower_Armor_Sharp>0</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.36</StuffPower_Armor_Blunt>
      <StuffPower_Insulation_Cold>42</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>12</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(192,192,192)</color>
      <commonality>0.025</commonality>
      <statFactors>
        <MaxHitPoints>0.6</MaxHitPoints>
	<Beauty>1.7</Beauty>
      </statFactors>
    </stuffProps>
  </ThingDef>


    <!-- ======================= Soft Fur =============================== -->

  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Soft</defName>
    <label>soft fur</label>
    <description>Warm, soft scraps of fur, usually sourced from small mammals. It's hard to collect a lot of it, but it works well for bedding.</description>
    <graphicData>
      <color>(168,147,125)</color>
    </graphicData>
    <statBases>
      <MarketValue>4</MarketValue>
      <StuffPower_Armor_Sharp>0.2</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.45</StuffPower_Armor_Blunt>
      <StuffPower_Insulation_Cold>30</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>12</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(168,147,125)</color>
      <commonality>0.025</commonality>
      <statFactors>
        <MaxHitPoints>0.6</MaxHitPoints>
	<Beauty>1.5</Beauty>
      </statFactors>
    </stuffProps>
  </ThingDef>

    <!-- ======================= Soft Fur =============================== -->

  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Coarse</defName>
    <label>coarse fur</label>
    <description>Bristly scraps of fur from a small mammal. Not the most comfortable or valuable, but it'll keep you moderately warm.</description>
    <graphicData>
      <color>(64,62,56)</color>
    </graphicData>
    <statBases>
      <MarketValue>1.4</MarketValue>
      <StuffPower_Armor_Sharp>0.25</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.48</StuffPower_Armor_Blunt>
      <StuffPower_Insulation_Cold>18</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>8</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(64,62,56)</color>
      <commonality>0.025</commonality>
      <statFactors>
        <MaxHitPoints>0.6</MaxHitPoints>
	<Beauty>1</Beauty>
      </statFactors>
    </stuffProps>
