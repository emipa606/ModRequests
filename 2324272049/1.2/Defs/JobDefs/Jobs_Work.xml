<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<JobDef>
		<defName>Metro_EntangleTargetWithCocoon</defName>
		<driverClass>Metro.JobDriver_EntangleTargetWithCocoon</driverClass>
		<neverFleeFromEnemies>true</neverFleeFromEnemies>
		<reportString>entangle TargetA with cocoon.</reportString>
		<suspendable>false</suspendable>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>
	
	<JobDef>
		<defName>Metro_LayWeb</defName>
		<driverClass>Metro.JobDriver_LayWeb</driverClass>
		<reportString>laying web.</reportString>
	</JobDef>

	<JobDef>
		<defName>Metro_SavePawnFromCocoon</defName>
		<driverClass>Metro.JobDriver_SavePawnFromCocoon</driverClass>
		<reportString>saves TargetA from TargetB</reportString>
	</JobDef>

  <JobDef>
    <defName>Metro_IngestFromCocoon</defName>
    <driverClass>Metro.JobDriver_IngestFromCocoon</driverClass>
    <reportString>consuming TargetA.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>
  
</Defs>
