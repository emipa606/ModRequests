<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ApparelBase" Name="AnimaApparelBase" Abstract="True">
    <techLevel>Neolithic</techLevel>
    <tradeTags>
      <li>AnimaApparel</li>
    </tradeTags>
	<tradeability>Buyable</tradeability>
    <apparel>
      <tags>
        <li>Psychic</li>
      </tags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="AnimaApparelBase">
    <defName>Apparel_AnimaTribal</defName>
    <label>anima tribalwear</label>
    <description>A full-body garment crafted using anima fibers specially for tribal psycasters.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TribalA/TribalA</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <statBases>
	  <MarketValue>300</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>2500</WorkToMake>
      <Mass>0.5</Mass>
      <Insulation_Cold>8</Insulation_Cold>
      <Insulation_Heat>4</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <PsychicSensitivityOffset>0.20</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>0.083</PsychicEntropyRecoveryRate>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TribalA/TribalA</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Neolithic</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(165,202,173)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>