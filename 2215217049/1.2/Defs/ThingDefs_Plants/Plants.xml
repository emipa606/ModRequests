<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>Plant_DomesticatedAnimaGrass</defName>
    <label>domesticated anima grass</label>
    <description>Ancient psycaster tribes managed to domesticate the anima grass and use it to harvest so-called "anima fiber" that can be used as a material for clothes for psycasters.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Grass_Anima</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <growDays>10</growDays>
      <sowWork>200</sowWork>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>AnimaFiber</harvestedThingDef>
      <harvestYield>5</harvestYield>
      <neverBlightable>true</neverBlightable>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowMinSkill>12</sowMinSkill>
      <sowResearchPrerequisites>
        <li>DomesticationAnimaGrass</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~0.45</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>
</Defs>