<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="AnimaApparelBase">
    <defName>Apparel_AnimaCrown</defName>
    <label>anima crown</label>
    <description>A crown for the chiefs of the psycaster tribes. Enhances psychic sensitivity and neural heat dissipation.</description>
	<techLevel>Neolithic</techLevel>
	<tradeability>None</tradeability>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Equipment/Apparel/AnimaCrown</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>500</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.5</Mass>
      <ArmorRating_Sharp>0.09</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.09</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>2</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PsychicSensitivityOffset>0.15</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>0.066</PsychicEntropyRecoveryRate>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Equipment/Apparel/AnimaCrown</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
	  <tags>
        <li>AnimaCrown</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    </ThingDef>
	
	<ThingDef ParentName="AnimaApparelBase">
    <defName>Apparel_AnimaWarMask</defName>
    <label>anima war mask</label>
    <description>An artistically terrifying war mask that hides the wearer's face and makes them more confident. Thanks to the anima fibers and jade used in the production of the mask, it can enhance the psycaster's psychic sensitivity and neural heat dissipation.</description>
    <techLevel>Neolithic</techLevel>
	<thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Equipment/Apparel/AnimaWarMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
	<uiIconScale>1.15</uiIconScale>
    <statBases>
	  <MarketValue>300</MarketValue>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>1.4</Mass>
      <ArmorRating_Sharp>0.30</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
      <Insulation_Cold>2</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	  <PsychicSensitivityOffset>0.1</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>0.060</PsychicEntropyRecoveryRate>
      <PainShockThreshold>0.10</PainShockThreshold>
	  <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.2</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Equipment/Apparel/AnimaWarMask</wornGraphicPath>
      <renderSkipFlags>
        <li>None</li>
      </renderSkipFlags>
      <drawData>
        <dataNorth>
          <layer>-3</layer>
        </dataNorth>
      </drawData>
      <ideoDesireAllowedFactionCategoryTags><li>Tribal</li></ideoDesireAllowedFactionCategoryTags>
      <layers>
        <li>Overhead</li>
      </layers>
	  <tags>
        <li>AnimaMask</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
    <ThingDef ParentName="AnimaApparelBase">
    <defName>Apparel_AnimaWarVeil</defName>
    <label>anima war veil</label>
    <description>A war veil, made out of reinforced cloth torn to appear damaged in combat. Some believe this functions as a talisman of courage.</description>
    <techLevel>Neolithic</techLevel>
	<thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Veil/Veil</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <statBases>
	  <MarketValue>150</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.08</Mass>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
      <Insulation_Cold>1</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	  <PsychicSensitivityOffset>0.05</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>0.050</PsychicEntropyRecoveryRate>
      <PainShockThreshold>0.05</PainShockThreshold>
	  <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
	  <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.35</ToxicEnvironmentResistance>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Veil/Veil</wornGraphicPath>
      <renderSkipFlags>
        <li>None</li>
      </renderSkipFlags>
      <drawData>
        <dataNorth>
          <layer>-3</layer>
        </dataNorth>
      </drawData>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
      <layers>
        <li>Overhead</li>
      </layers>
	  <tags>
        <li>AnimaVeil</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(165,202,173)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>