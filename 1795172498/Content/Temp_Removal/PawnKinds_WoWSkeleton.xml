<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<!-- ============================ WoWScourge Base ========================== -->
	<PawnKindDef Name="WoW_Scourge_PawnkindBase" Abstract="True">
		<defaultFactionType>Scourge</defaultFactionType>
		<race>WoW_Skeleton</race>
		<chemicalAddictionChance>0.0</chemicalAddictionChance>
		<isFighter>true</isFighter>
		<!--<baseRecruitDifficulty>1.00</baseRecruitDifficulty>-->
		<invNutrition>2.55</invNutrition>
		<apparelAllowHeadgearChance>0.0</apparelAllowHeadgearChance>
		<aiAvoidCover>true</aiAvoidCover>
		<apparelTags>
			<li>WoW_Tribal_Apparel</li>
			<li>WoW_Medieval_Apparel</li>
			<li>WoW_Medieval_LightArmor</li>
			<li>WoW_Medieval_HeavyArmor</li>
		</apparelTags>
		<apparelColor>(16.1,27.8,27.5)</apparelColor>
		<itemQuality>Poor</itemQuality>
		<weaponTags>
		   <li>WoW_Civilian_Melee_Basic</li>
			<li>WoW_Civilian_Ranged_Basic</li>
		   <li>WoW_Tribal_Melee_Basic</li>
			<li>WoW_Medieval_Melee_Basic</li>
			<li>WoW_Medieval_Melee_Good</li>
		</weaponTags>
		<initialResistanceRange>10~20</initialResistanceRange>
		<initialWillRange>0~5</initialWillRange>
		<inventoryOptions>
			<skipChance>0.8</skipChance>
			<subOptionsChooseOne>
				<li>
					<thingDef>Silver</thingDef>
					<countRange>
						<min>50</min>
						<max>100</max>
					</countRange>
				</li>
			</subOptionsChooseOne>
		</inventoryOptions>
	</PawnKindDef>
	<!-- ============================ WoWScourge Military ========================== -->
	<PawnKindDef ParentName="WoW_Scourge_PawnkindBase">
		<defName>WoW_Scourge_Skeleton_Human</defName>
		<label>skeleton</label>
		<combatPower>50</combatPower>
		<gearHealthRange>
			<min>0.1</min>
			<max>0.25</max>
		</gearHealthRange>
		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>WoW_Human_Backstory</li>
				</categories>
			</li>
		</backstoryFiltersOverride>
		<apparelMoney>
			<min>500</min>
			<max>1000</max>
		</apparelMoney>
		<weaponMoney>
			<min>500</min>
			<max>1000</max>
		</weaponMoney>
	</PawnKindDef>
</Defs>