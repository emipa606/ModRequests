<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ===== Tribal Basic ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Apparel_TribalA"]/apparel/tags</xpath>
				<value>
					<li>WoW_Tribal_Apparel</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Apparel_TribalHeaddress" or defName = "Apparel_WarMask" or defName = "Apparel_WarVeil"]/apparel</xpath>
				<value>
					<tags>
						<li>WoW_Tribal_Apparel</li>
					</tags>
				</value>
			</li>

			<!-- ===== Medieval Basic Apparel ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Apparel_Pants" or defName = "Apparel_BasicShirt" or defName = "Apparel_CollarShirt" or defName = "Apparel_Duster" or defName = "Apparel_Jacket"]/apparel/tags</xpath>
				<value>
					<li>WoW_Medieval_Apparel</li>
				</value>
			</li>

			<!-- ===== Medieval Heavy Armor ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Apparel_PlateArmor"]/apparel/tags</xpath>
				<value>
					<li>WoW_Medieval_LightArmor</li>
					<li>WoW_Medieval_HeavyArmor</li>
				</value>
			</li>

		</operations>
	</Operation>
</Patch>