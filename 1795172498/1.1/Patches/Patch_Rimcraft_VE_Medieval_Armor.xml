<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>

			<!-- ============================ Medieval ========================== -->
			<!-- ===== Medieval Basic Apparel ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_Tabard"]/tags</xpath>
				<value>
					<li>WoW_Medieval_Apparel</li>
				</value>
			</li>

			<!-- ===== Medieval Light Armor ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_PlateHelmetLight" or defName = "VFEM_Apparel_Tabard"]/tags</xpath>
				<value>
					<li>WoW_Medieval_LightArmor</li>
				</value>
			</li> 
			
			<!-- ===== Medieval Heavy Armor ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_PlateHelmetLight" or defName = "VFEM_Apparel_PlateHelmetHeavy" or defName = "VFEM_Apparel_PlateArmorHeavy" or defName = "VFEM_Apparel_Tabard"]/tags</xpath>
				<value>
					<li>WoW_Medieval_HeavyArmor</li>
				</value>
			</li>

			</operations>
		</match>
	</Operation>
</Patch>