<?xml version="1.0" encoding="UTF-8"?>
<Patch>
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>Lord of the Rims - Elves</li>
      </mods>
      <match Class="PatchOperationSequence">
         <success>Always</success>
         <operations>
			<!-- ============================ Apparel Tag injection ========================== -->
            <li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="NightElfBase"]/apparelTags</xpath>
               <value>
                     <li>LotRE_ElvenApparel</li>
               </value>
            </li>
			<li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="NightElfMilBase"]/apparelTags</xpath>
               <value>
                     <li>LotR_ElfMilitary</li>
               </value>
            </li>
			
            <!-- ============================ Weapon Tag injection ========================== -->
			<li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="NightElfCivBase"]/weaponTags</xpath>
               <value>
                     <li>ElvenMeleeWeak</li>
               </value>
            </li>
			<li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="NightElfMilBase"]/weaponTags</xpath>
               <value>
                     <li>ElvenMeleeWeak</li>
					 <li>ElvenRanged</li>
               </value>
            </li>
			<li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="WoW_NightElf_Archer"]/weaponTags</xpath>
               <value>
					 <li>ElvenRanged</li>
               </value>
            </li>
			<li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="WoW_NightElf_Sentinel"]/weaponTags</xpath>
               <value>
					 <li>ElvenMeleeStrong</li>
               </value>
            </li>
			<li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="WoW_NightElf_Hunter"]/weaponTags</xpath>
               <value>
					 <li>ElvenRangedMighty</li>
			         <li>ElvenRanged</li>
               </value>
            </li>
			<li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="WoW_NightElf_Watcher"]/weaponTags</xpath>
               <value>
					 <li>ElvenMeleeStrong</li>
               </value>
            </li>
			<li Class="PatchOperationAdd">
               <xpath>/Defs/PawnKindDef[@Name="WoW_NightElf_EliteSentinel"]/weaponTags</xpath>
               <value>
					 <li>ElvenMeleeMighty</li>
               </value>
            </li>
         </operations>
      </match>
   </Operation>
</Patch>