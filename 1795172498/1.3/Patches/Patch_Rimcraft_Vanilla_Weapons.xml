<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
		   
			
			
			<!-- ============================ Melee ========================== -->
			<!-- ===== Tribal Basic Melee ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "MeleeWeapon_Club" or defName = "MeleeWeapon_Knife"]/weaponTags</xpath>
				<value>
					<li>WoW_Tribal_Melee_Basic</li>
				</value>
			</li>
			
			<!-- ===== Tribal Good Melee ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "MeleeWeapon_Spear" or defName = "MeleeWeapon_Ikwa"]/weaponTags</xpath>
				<value>
					<li>WoW_Tribal_Melee_Basic</li>
				</value>
			</li>

			<!-- ===== Medieval Basic Melee ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "MeleeWeapon_Knife" or defName = "MeleeWeapon_Spear" or defName = "MeleeWeapon_Mace" or defName = "MeleeWeapon_Gladius"]/weaponTags</xpath>
				<value>
					<li>WoW_Medieval_Melee_Basic</li>
				</value>
			</li>

			<!-- ===== Medieval Good Melee ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "MeleeWeapon_LongSword"]/weaponTags</xpath>
				<value>
					<li>WoW_Medieval_Melee_Good</li>
				</value>
			</li>
			
			
			
			<!-- ============================ Ranged ========================== -->
			<!-- ===== Tribal Basic Ranged ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Pila"]/weaponTags</xpath>
				<value>
					<li>WoW_Tribal_Ranged_Basic</li>
				</value>
			</li>

			<!-- ===== Medieval Basic Ranged ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Bow_Short"]/weaponTags</xpath>
				<value>
					<li>WoW_Medieval_Ranged_Basic</li>
				</value>
			</li>

			<!-- ===== Medieval Good Ranged ===== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Bow_Recurve" or defName = "Bow_Great"]/weaponTags</xpath>
				<value>
					<li>WoW_Medieval_Ranged_Good</li>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>