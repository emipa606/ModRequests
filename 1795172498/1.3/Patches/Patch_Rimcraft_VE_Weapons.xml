<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			   <!-- ============================ Melee ========================== -->
				
				<!-- ==================== Civilian ==================== -->
				
				<!-- ===== Civilian Melee ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_MeleeWeapon_Axe" or defName = "VWE_MeleeWeapon_Pickaxe" or defName = "VWE_MeleeWeapon_Hammer"]/weaponTags</xpath>
					<value>
						<li>WoW_Civilian_Melee_Basic</li>
					</value>
				</li>

            
				<!-- ==================== Tribal ==================== -->
				
				<!-- ===== Tribal Basic Melee ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_MeleeWeapon_Axe" or defName = "VWE_MeleeWeapon_Hammer"]/weaponTags</xpath>
					<value>
						<li>WoW_Tribal_Melee_Basic</li>
					</value>
				</li>

				<!-- ===== Tribal Good Melee ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_MeleeWeapon_BattleAxe"]/weaponTags</xpath>
					<value>
						<li>WoW_Tribal_Melee_Good</li>
					</value>
				</li>

				<!-- ===== Tribal Elite Melee ===== -->
            
				<!-- ==================== Medieval ==================== -->
				
				<!-- ===== Medieval Basic Melee ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_MeleeWeapon_Hammer"]/weaponTags</xpath>
					<value>
							<li>WoW_Medieval_Melee_Basic</li>
					</value>
				</li>

				<!-- ===== Medieval Good Melee ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_MeleeWeapon_BattleAxe" or defName = "VWE_MeleeWeapon_Halberd"]/weaponTags</xpath>
					<value>
						<li>WoW_Medieval_Melee_Good</li>
					</value>
				</li>

				<!-- ===== Medieval Elite Melee ===== -->

				<!-- ==================== Unique ==================== -->
				
				<!-- ===== Wrench ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_MeleeWeapon_Wrench"]/weaponTags</xpath>
					<value>
						<li>WoW_Tinker</li>
						<li>WoW_Civilian_Melee_Basic</li>
					</value>
				</li>
				<!-- ===== Cleaver ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_MeleeWeapon_Cleaver"]/weaponTags</xpath>
					<value>
						<li>WoW_Forsaken_Sadist</li>
						<li>WoW_Civilian_Melee_Basic</li>
					</value>
				</li>
				
				
				<!-- ============================ Ranged ========================== -->
				
				<!-- ==================== Civilian ==================== -->
				
				<!-- ===== Civilian Ranged ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_Throwing_Rocks"]/weaponTags</xpath>
					<value>
						<li>WoW_Civilian_Ranged_Basic</li>
					</value>
				</li>
				
            <!-- ==================== Tribal ==================== -->
				
				<!-- ===== Tribal Basic Ranged ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_Throwing_Knives"]/weaponTags</xpath>
					<value>
						<li>WoW_Tribal_Ranged_Basic</li>
					</value>
				</li>

				<!-- ===== Tribal Good Ranged ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_Bow_Long" or defName = "VWE_Throwing_Knives"]/weaponTags</xpath>
					<value>
						<li>WoW_Tribal_Ranged_Good</li>
					</value>
				</li>
            
				<!-- ==================== Medieval ==================== -->
				
				<!-- ===== Medieval Basic Ranged ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_Bow_Long"]/weaponTags</xpath>
					<value>
						<li>WoW_Medieval_Ranged_Basic</li>
					</value>
				</li>

				<!-- ===== Medieval Good/Elite Ranged ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_Bow_Long" or defName = "VWE_Bow_Crossbow"]/weaponTags</xpath>
					<value>
						<li>WoW_Medieval_Ranged_Good</li>
						<li>WoW_Medieval_Ranged_Elite</li>
					</value>
				</li>
				
				<!-- ==================== Medieval Primitive Guns ==================== -->
				
				<!-- ===== Primitive ===== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VWE_Gun_Musket" or defName = "VWE_Gun_Flintlock"]/weaponTags</xpath>
					<value>
						<li>WoW_Medieval_Ranged_Gun</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>