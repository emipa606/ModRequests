<?xml version="1.0" encoding="UTF-8"?>
<Defs>
   <FactionDef>
      <defName>Scourge</defName>
      <label>Scourge Ruins</label>
      <description>The Scourge is the vast army of the undead serving the Lich King. Under the control of the Burning Legion, the Scourge's mission is to spread terror and destruction across the world in anticipation of the Legion's inevitable invasion.</description>
      <pawnsPlural>Undead</pawnsPlural>
      <fixedName>The Scourge</fixedName>
      <settlementGenerationWeight>0</settlementGenerationWeight>
      <requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxConfigurableAtWorldCreation>3</maxConfigurableAtWorldCreation>
      <configurationListOrderPriority>10</configurationListOrderPriority>
      <canSiege>false</canSiege>
      <canStageAttacks>false</canStageAttacks>
      <leaderTitle>Lich King</leaderTitle>
      <factionIconPath>World/WorldObjects/Scourge Icon</factionIconPath>
      <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
      <hidden>true</hidden>
      <autoFlee>false</autoFlee>
      <canUseAvoidGrid>false</canUseAvoidGrid>
      <permanentEnemy>true</permanentEnemy>
      <allowedArrivalTemperatureRange>
         <min>-100</min>
         <max>120</max>
      </allowedArrivalTemperatureRange>
      <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
      <techLevel>Medieval</techLevel>
      <apparelStuffFilter>
         <thingDefs>
            <li>Cloth</li>
            <li>Steel</li>
         </thingDefs>
      </apparelStuffFilter>
      <backstoryFilters>
         <li>
            <categories>
               <li>WoW_Human_Backstory</li>
            </categories>
            <commonality>1</commonality>
         </li>
      </backstoryFilters>
      <maxPawnCostPerTotalPointsCurve>
         <points>
            <li>(0,35)</li>
            <li>(70, 50)</li>
            <li>(700, 100)</li>
            <li>(1300, 150)</li>
            <li>(100000, 10000)</li>
         </points>
      </maxPawnCostPerTotalPointsCurve>
		<raidLootValueFromPointsCurve>
      <points>
        <li>(35,     15)</li>
        <li>(100,   120)</li>
        <li>(1000,  500)</li>
        <li>(2000,  800)</li>
        <li>(4000, 1000)</li>
      </points>
    </raidLootValueFromPointsCurve>
      <pawnGroupMakers>
         <li>
            <kindDef>Combat</kindDef>
            <options>
               <WoW_Scourge_Skeleton_Human>100</WoW_Scourge_Skeleton_Human>
            </options>
         </li>
         <li>
            <kindDef>Settlement</kindDef>
            <options>
               <WoW_Scourge_Skeleton_Human>100</WoW_Scourge_Skeleton_Human>
            </options>
         </li>
      </pawnGroupMakers>
   </FactionDef>
</Defs>