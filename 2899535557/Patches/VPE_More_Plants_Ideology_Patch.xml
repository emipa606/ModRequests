<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded - More Plants</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Ideology">
					<xpath>Defs/ThingDef[defName="VCE_Moss"]/plant/sowTags</xpath>
					<value>
						<li>Hydroponic</li>
					</value>
				</li>
				<li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Ideology">
					<xpath>Defs/ThingDef[defName="VCE_Tinctshroom"]/plant/sowTags</xpath>
					<value>
						<li>Hydroponic</li>
					</value>
				</li>
				<li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Ideology">
					<xpath>Defs/ThingDef[defName="VCE_Healshroom"]/plant/sowTags</xpath>
					<value>
						<li>Hydroponic</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
	
	