<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Alpha Biomes</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
			
				<!-- Crystalline Wood -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="AB_CrystalWood"]/tools</xpath>
				</li>
	
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="AB_CrystalWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- Red Wood -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="GU_RedWood"]/tools</xpath>
				</li>
	
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="GU_RedWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- Mushroom Stalks -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="AB_MushroomWoodLog"]/tools</xpath>
				</li>
	
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="AB_MushroomWoodLog"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
			</operations>
        </match>
    </Operation>
</Patch>