<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>RimCookie - Aesthetic Materials</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
			
				<!-- All Wood -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[@Name="WoodBase"]/tools</xpath>
				</li>
				
				<!-- RedWood -->
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="RedWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- HighWood -->
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="HighWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- DarkWood -->
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="DarkWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- EbonyWood -->
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="EbonyWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- MahoganyWood -->
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="MahoganyWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- CactusWood -->
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="CactusWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- BambooWood -->
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="BambooWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
			</operations>
        </match>
    </Operation>
</Patch>