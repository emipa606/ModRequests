<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Zen Garden (Continued)</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
			
				<!-- Cherry Wood -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="ZEN_CherryWood"]/tools</xpath>
				</li>
	
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="ZEN_CherryWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
				<!-- Ebony Wood -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="ZEN_EbonyWood"]/tools</xpath>
				</li>
	
				<li Class="PatchOperationAttributeSet">
					<xpath>Defs/ThingDef[defName="ZEN_EbonyWood"]</xpath>
					<attribute>ParentName</attribute>
					<value>ResourceBase</value>
				</li>
				
			</operations>
        </match>
    </Operation>
</Patch>