	<!--====================== Functional Genes ======================-->
	<!-- Unguligrade Legs -->
		
	<GeneDef>
		<defName>RBM_UnguligradeLegs</defName>
		<label>unguligrade legs</label>
		<description>Carriers of this gene are born with sturdy legs and cloven hooves. The fur on their legs extends up to their stomachs and covers their groin.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayCategory>Miscellaneous</displayCategory>
		<displayOrderInCategory>330</displayOrderInCategory>
		<iconPath>UI/GeneIcons/RBM_BovineLegs</iconPath>
		<iconColor>(0.75, 0.75, 0.75)</iconColor>
		<symbolPack>
			<prefixSymbols>
				<li><symbol>faun</symbol></li>
				<li><symbol>jog</symbol></li>
				<li><symbol>bov</symbol></li>
				<li><symbol>bolt</symbol></li>
			</prefixSymbols>
			<suffixSymbols>
				<li><symbol>yr</symbol></li>
				<li><symbol>ine</symbol></li>
				<li><symbol>trotter</symbol></li>
				<li><symbol>hoof</symbol></li>
				<li><symbol>ped</symbol></li>
			</suffixSymbols>
		</symbolPack>
		<!-- Thee following will occur if you ARE running vanilla framework expanded. If not, a patch is added to tie the gene buffs to the pawn, as opposed to the body part -->
		<modExtensions>
			<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VanillaGenesExpanded.GeneExtension">
				<hediffsToBodyParts>
					<li>
						<hediff>UnguligradeLegPart</hediff>
						<bodyparts>
							<li>Leg</li>
							<li>Leg</li>
						</bodyparts>
					</li>
				</hediffsToBodyParts>
			</li>
		</modExtensions>
	</GeneDef>
	
	<!-- Herculean -->
  
	<GeneDef>
		<defName>RBM_Herculean</defName>
		<label>Herculean</label>
		<description>Carriers of this gene are staggeringly strong. Their herculean bodies prove them to be excellent pack mules, formidable foes in battle and rather painful lovers. There are some weapons that only Herculean pawns can equip.</description>
		<geneClass>RBM_Minotaur.Gene_RBM_Herculean</geneClass>
		<biostatCpx>2</biostatCpx>
		<biostatMet>-3</biostatMet>
		<displayCategory>Miscellaneous</displayCategory>
		<displayOrderInCategory>580</displayOrderInCategory>
		<iconPath>UI/GeneIcons/RBM_Herculean</iconPath>
		<iconColor>(0.75, 0.75, 0.75)</iconColor>
		<randomChosen>true</randomChosen>
		<statOffsets>
			<MeleeDodgeChance>-10</MeleeDodgeChance>
			<CarryingCapacity>4</CarryingCapacity>
			<MoveSpeed>-0.2</MoveSpeed>
		</statOffsets>
		<statFactors>
			<MeatAmount>1.3</MeatAmount>
			<LeatherAmount>1.3</LeatherAmount>
			<ArrestSuccessChance>1.5</ArrestSuccessChance>
			<MeleeDPS>1.3</MeleeDPS>
		</statFactors>
		<symbolPack>
			<prefixSymbols>
				<li><symbol>rip</symbol></li>
				<li><symbol>wall</symbol></li>
				<li><symbol>hercu</symbol></li>
				<li><symbol>hench</symbol></li>
				<li><symbol>jack</symbol></li>
				<li><symbol>aggro</symbol></li>
				<li><symbol>vigor</symbol></li>
			</prefixSymbols>
			<suffixSymbols>
				<li><symbol>roid</symbol></li>
				<li><symbol>lean</symbol></li>
				<li><symbol>bulk</symbol></li>
				<li><symbol>rile</symbol></li>
			</suffixSymbols>
		</symbolPack>
		<modExtensions>
			<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VanillaGenesExpanded.GeneExtension">
				<caravanCarryingFactor>1.3</caravanCarryingFactor>
				<bodyScaleFactor>1.35,1.35</bodyScaleFactor>
				<headScaleFactor>1.1,1.1</headScaleFactor>
			</li>
		</modExtensions>
	</GeneDef>
	
	<!-- Bovine Temper -->
	
	<GeneDef>
		<defName>RBM_BovineTemper</defName>
		<label>Bovine Temper</label>
		<description>Carriers of this gene become frighteningly aggressive when enraged. They possess the ability to 'See Red', a horrifying state of outrage that can only be ended by total exhaustion or death.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>1</biostatMet>
		<displayCategory>Ability</displayCategory>
		<displayOrderInCategory>200</displayOrderInCategory>
		<iconPath>UI/GeneIcons/RBM_BovineTemper</iconPath>
		<iconColor>(0.75, 0.75, 0.75)</iconColor>
		<abilities>
			<li>RBM_SeeRed</li>
		</abilities>
		<descriptionHyperlinks>
			<AbilityDef>RBM_SeeRed</AbilityDef>
		</descriptionHyperlinks>
		<aggroMentalBreakSelectionChanceFactor>1.5</aggroMentalBreakSelectionChanceFactor>
		<!-- Symbol -->
		<symbolPack>
			<wholeNameSymbols>
				<li><symbol>minotaur</symbol></li>
			</wholeNameSymbols>
			<prefixSymbols>
				<li><symbol>bull</symbol></li>
				<li><symbol>steer</symbol></li>
				<li><symbol>an</symbol></li>
				<li><symbol>mino</symbol></li>
			</prefixSymbols>
			<suffixSymbols>
				<li><symbol>vine</symbol></li>
				<li><symbol>gus</symbol></li>
				<li><symbol>ford</symbol></li>
				<li><symbol>taur</symbol></li>
			</suffixSymbols>
		</symbolPack>
	</GeneDef>
	
	<!-- Periodic Lactation -->
	
	<GeneDef>
		<defName>RBM_PeriodicLactation</defName>
		<label>lactation</label>
		<description>Carriers of this gene produce milk periodically. Pawns with this gene can manually be milked via their ability, or automatically via a milking machine. \n\n(By default, male and female pawns can both be milked. You can change this, or disable the functionality altogether, in the mod settings menu.)</description>
