	<!--====================== Minotaur Forenames (Male) ======================-->
		
	<RulePackDef ParentName="NamerMinotaurBase">
		<defName>NamerPersonMinotaur_Male</defName>
		<rulePack>
			<rulesRaw>
				<li Class="Rule_NamePerson">
					<keyword>firstName</keyword>
					<gender>Male</gender>
				</li>
			</rulesRaw>
			<rulesStrings>
