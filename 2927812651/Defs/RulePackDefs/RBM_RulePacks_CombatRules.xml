<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--====================== Terrify - Combat Rule ======================-->
	<!-- Used by the Taurail Gun and See Red ability -->

	<RulePackDef>
		<defName>Damage_Terrify</defName>
		<include>
		<li>DamageEvent_Include</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>damaged_past->terrified</li>
				<li>damaged_past->petrified</li>
				<li>damaged_past->horrified</li>
				<li>damaged_past->intimidated</li>
				<li>damaged_past->mentally-scarred</li>
				<li>damaged_past->traumatised</li>
				
				<li>damaged_present->terrifies</li>
				<li>damaged_present->horrifies</li>
				<li>damaged_present->traumatises</li>
				
			</rulesStrings>
		</rulePack>
	</RulePackDef>
	
	<!--====================== Critical Hit - Combat Rule ======================-->
	<!-- Used by the Damocles -->
	
		<RulePackDef>
		<defName>Damage_Crit</defName>
		<include>
		<li>DamageEvent_Include</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_logentry->[INITIATOR_definite] [crit_past] [RECIPIENT_definite] with a critical hit.</li>
				
				<li>damage_source->a critical hit [crit_past]</li>
				<li>damage_source->a masterfully landed critical hit [crit_past]</li>
				<li>damage_source->[INITIATOR_definite] landed a critical hit on</li>
				
				<li>crit_past->sliced</li>
				<li>crit_past->ambushed</li>
				<li>crit_past->rushed</li>
				<li>crit_past->assaulted</li>
				<li>crit_past->pierced</li>
				<li>crit_past->tore</li>
				<li>crit_past->wounded</li>
				<li>crit_past->impaled</li>
				<li>crit_past->punctured</li>
				<li>crit_past->surprised</li>
				<li>crit_past->astonished</li>
				
				<li>damaged_present->perforating</li>
				<li>damaged_present->assaulting</li>
				<li>damaged_present->hacking</li>
				<li>damaged_present->shaving</li>
				
				
				<li>destroyed_present->slicing off</li>
				<li>destroyed_present->tearing</li>
				<li>destroyed_present->split</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

</Defs>