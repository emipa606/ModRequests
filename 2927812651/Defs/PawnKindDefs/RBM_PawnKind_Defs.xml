	<!-- Strong Minotaur Guardian - has fabled weapons -->
	
	<PawnKindDef>
		<defName>RBM_MinotaurGuardianHigh</defName>
		<race>Human</race>
		<defaultFactionType>Ancients</defaultFactionType>
		<isFighter>True</isFighter>
		<label>minotaur guardian</label>
		<maxGenerationAge>50</maxGenerationAge>
		<combatPower>120</combatPower>
		<invNutrition>3.55</invNutrition>
		<chemicalAddictionChance>0.03</chemicalAddictionChance>
		<initialWillRange>2~3</initialWillRange>
		<initialResistanceRange>20~36</initialResistanceRange>
		<itemQuality>Excellent</itemQuality>
		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>MinotaurGuardian</li>
				</categories>
			</li>
		</backstoryFiltersOverride>
