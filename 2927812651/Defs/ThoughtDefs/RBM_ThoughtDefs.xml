			<li MayRequire="Ludeon.RimWorld.Biotech">RBM_Herculean</li>
		</nullifyingGenes>
		<requiredTraits>
			<li>Masochist</li>
		</requiredTraits>
		<validWhileDespawned>true</validWhileDespawned>
		<showBubble>true</showBubble>
		<icon>Things/Mote/RBM_Crushed/RBM_Crushed</icon>
		<developmentalStageFilter>Adult</developmentalStageFilter>
		<durationDays>1</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>crushed</label>
				<description>Wow. Having a tumble with someone twice my size hurts so good!</description>
