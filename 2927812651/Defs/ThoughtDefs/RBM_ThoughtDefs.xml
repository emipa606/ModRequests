<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<!--====================== Crushed (Negative) ======================-->
	<!-- None-Herculean pawns who engage in lovin' with a Herculean pawn recieve this thought -->
  
	<ThoughtDef>
		<defName>RBM_Crushed</defName>
		<nullifyingTraits>
			<li>Masochist</li>
		</nullifyingTraits>
		<nullifyingGenes>
			<li MayRequire="Ludeon.RimWorld.Biotech">RBM_Herculean</li>
		</nullifyingGenes>
		<validWhileDespawned>true</validWhileDespawned>
		<showBubble>true</showBubble>
		<icon>Things/Mote/RBM_Crushed/RBM_Crushed</icon>
		<developmentalStageFilter>Adult</developmentalStageFilter>
		<durationDays>1</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>crushed</label>
				<description>Well, that's what I get when I tumble with someone twice my size...</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
  
