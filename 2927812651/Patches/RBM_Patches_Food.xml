<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationAttributeSet">
        <xpath>Defs/ThingDef[defName="Hay"]</xpath>
        <attribute>ParentName</attribute>
        <value>OrganicProductBase</value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Hay"]/ingestible</xpath>
        <value>
            <preferability>RawTasty</preferability>
            <foodType>VegetableOrFruit</foodType>
            <maxNumToIngestAtOnce>50</maxNumToIngestAtOnce>
            <optimalityOffsetHumanlikes>16</optimalityOffsetHumanlikes>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Hay"]/statBases</xpath>
        <value>
            <Nutrition>0.05</Nutrition>
        </value>
    </Operation>

        <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Hay"]</xpath>
        <value>
            <socialPropernessMatters>true</socialPropernessMatters>
        </value>
    </Operation>


</Patch>
