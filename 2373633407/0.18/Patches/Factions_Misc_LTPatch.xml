<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- ========== Patch - Adding Trading Caravans ========== -->


<Operation Class="PatchOperationSequence">
	<success>Always</success>
	<operations>
		<li Class="PatchOperationAdd">
			<xpath>/Defs/FactionDef[defName = "Outlander"]/caravanTraderKinds</xpath>
			<value>
				<li>Caravan_Outlander_Farming</li>
				<li>Caravan_Outlander_Mining</li>
				<li>Caravan_Outlander_Fabric</li>
				<li>Caravan_Outlander_Medical</li>
				<li>Caravan_Outlander_Drugs</li>
				<li>Caravan_Outlander_Archeological</li>
			</value>
		</li>
	</operations>
</Operation>

<Operation Class="PatchOperationSequence">
	<success>Always</success>
	<operations>
		<li Class="PatchOperationAdd">
			<xpath>/Defs/FactionDef[defName = "Tribe"]/caravanTraderKinds</xpath>
			<value>
				<li>Caravan_Neolithic_Shepherd</li>
				<li>Caravan_Neolithic_Gem</li>
				<li>Caravan_Neolithic_Skins</li>
				<li>Caravan_Neolithic_Medical</li>
				<li>Caravan_Neolithic_Art</li>
				<li>Caravan_Neolithic_Odd</li>
			</value>
		</li>
	</operations>
</Operation>


	<!-- ===                                     Code for 'Let's Trade!' by EarthyTurtle.                                     === -->
	<!-- === This label is actually just so I don't accidently place anything after the Patch tag. :P === -->
</Patch>
