        <commonality>1</commonality>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/TraderKindDef[@Name="Orbital_PirateMerchant"]</xpath>
        <value>
        <commonality>1</commonality>
        </value>
      </li>

    </operations>
  </Operation>
</Patch>
