<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseGun">
    <defName>Gun_IAW</defName>
    <label>infantry artillery weapon</label>
    <description>A very lighweight telescoping rocket launcher which fires a single high-yield rocket. Consisting of little more than a tube with a rocket, it is very lightweight and cheap to produce.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Weapon/IAW</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>220</MarketValue>
      <Mass>3.5</Mass>
      <RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
    </statBases>
	<equippedStatOffsets>
      <MoveSpeed>-0.02</MoveSpeed>
    </equippedStatOffsets>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>Gun</li>
      <li>GunHeavy</li>
    </weaponTags>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
		<costList>
			<Steel>35</Steel>
			<Chemfuel>15</Chemfuel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
    <thingSetMakerTags>
      <li>SingleUseWeapon</li>
    </thingSetMakerTags>
    <verbs>
      <li>
        <verbClass>Verb_ShootOneUse</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_IAWRocket</defaultProjectile>
        <forcedMissRadius>4.2</forcedMissRadius>
        <warmupTime>5.5</warmupTime>
        <ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>29.9</range>       
		<minRange>4.9</minRange>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_IAWRocket</defName>
    <label>IAW rocket</label>
    <graphicData>
      <texPath>Weapon/RPGrocket</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>60</speed>
      <explosionRadius>4.5</explosionRadius>
      <flyOverhead>false</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarIncendiary_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
 </Defs>