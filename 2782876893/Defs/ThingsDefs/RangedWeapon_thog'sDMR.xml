<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_DMR</defName>
    <label>designated marksman rifle</label>
    <description>A specialized variation of a standard assault rifle, built with a heavier barrel, semi-automatic trigger group and long-range optic. Chambered for a higher caliber, it's capable of striking out at a further range than an assault rifle notably faster than bolt action alternatives, though not with as much stopping power or range.</description>
    <graphicData>
      <texPath>Weapon/DMR</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>46000</WorkToMake>
      <Mass>3.8</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.62</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.82</AccuracyLong>
      <RangedWeapon_Cooldown>.7</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>65</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_DMR</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>37.9</range>
        <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>SniperRifle</li>
			<li>IndustrialGunAdvanced</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_DMR</defName>
    <label>DMR bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>13</damageAmountBase>
      <speed>80</speed>
    </projectile>
  </ThingDef>
 </Defs>