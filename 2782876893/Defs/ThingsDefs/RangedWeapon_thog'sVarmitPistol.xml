<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_VarmitPistol</defName>
		<label>Varmit Pistol</label>
		<description>A very low-caliber pistol popular amongst target shooters and squirrel terminators galaxy-wide, known for its low recoil and ease of shooting for all users. Very accurate, and light, but very weak.</description>
		<graphicData>
			<texPath>Weapon/VarmitPistol</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
	  <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>1</Crafting>
      </skillRequirements>
    </recipeMaker>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<Mass>2.8</Mass>
			<AccuracyTouch>0.80</AccuracyTouch>
			<AccuracyShort>0.8</AccuracyShort>
			<AccuracyMedium>0.69</AccuracyMedium>
			<AccuracyLong>0.60</AccuracyLong>
			<RangedWeapon_Cooldown>.5</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
        <li>SimpleGun</li>
        </weaponTags>
		<costList>
			<Steel>15</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
    <verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_VarmitPistol</defaultProjectile>
				<warmupTime>.6</warmupTime>
				<range>21.9</range>
				<burstShotCount>1</burstShotCount>
				<ticksBetweenBurstShots>9</ticksBetweenBurstShots>
				<soundCast>Shot_MachinePistol</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_VarmitPistol</defName>
    <label>Varmit pistol bullet</label>
    <graphicData>
      <texPath>Weapon/Bullet_Tiny</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>5</damageAmountBase>
      <speed>60</speed>
    </projectile>
  </ThingDef>
 </Defs>