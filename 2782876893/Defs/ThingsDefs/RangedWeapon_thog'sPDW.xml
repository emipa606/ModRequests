<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_PDW</defName>
    <label>PDW</label>
    <description>A highly compact variant of a SMG, meant for personal defence for rear-echelon industrial military members. It's exceptionally lightweight and quick to draw, while offering an incredibly high rate of opressive fire in close quarters whilst completely disregarding long-range effectiveness.</description>
    <graphicData>
      <texPath>Weapon/PDW</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>2</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.46</AccuracyShort>
      <AccuracyMedium>0.23</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
	<weaponTags>
    <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PDW</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>16.9</range>
        <burstShotCount>6</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Shot_MachinePistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>8</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_PDW</defName>
    <label>PDW bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>6</damageAmountBase>
      <speed>60</speed>
    </projectile>
  </ThingDef>
 </Defs>