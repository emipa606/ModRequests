<?xml version="1.0" encoding="utf-8"?>
<Defs>
   <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_CombatShotgun</defName>
    <label>combat shotgun</label>
    <description>An ancient design of shotgun with some more modern TLC. A tight choke and improved furniture increases accuracy and effective range, but the increased weight and length makes it less weildy to hold and fire.</description>
    <graphicData>
      <texPath>Weapon/CombatShotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>3.8</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.78</AccuracyMedium>
      <AccuracyLong>0.7</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_CombatShotgun</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>19.9</range>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
    <ThingDef ParentName="BaseBullet">
    <defName>Bullet_CombatShotgun</defName>
    <label>combat shotgun blast</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>21</damageAmountBase>
      <stoppingPower>3</stoppingPower>
      <armorPenetrationBase>0.15</armorPenetrationBase>
      <speed>59</speed>
    </projectile>
  </ThingDef>
 </Defs>