<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_ServiceRifle</defName>
		<label>Service Rifle</label>
		<description>A simplistic gas-operated automatic rifle, ubiquitous amongst mercenary bands, pirates, and industrial militaries alike across the galaxy. It's simpler to produce than more modern rifle designs, though notably less accurate at a range.</description>
		<graphicData>
			<texPath>Weapon/ServiceRifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
		<statBases>
			<WorkToMake>32000</WorkToMake>
			<Mass>3.7</Mass>
			<AccuracyTouch>0.60</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.60</AccuracyMedium>
			<AccuracyLong>0.50</AccuracyLong>
			<RangedWeapon_Cooldown>1.75</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
        <li>IndustrialGunAdvanced</li>
        </weaponTags>
		<costList>
		    <WoodLog>20</WoodLog>
			<Steel>40</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
    <verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_ServiceRifle</defaultProjectile>
				<warmupTime>1.1</warmupTime>
				<range>29.9</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>11</ticksBetweenBurstShots>
				<soundCast>Shot_HeavySMG</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_ServiceRifle</defName>
    <label>service rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <speed>74</speed>
    </projectile>
  </ThingDef>
 </Defs>