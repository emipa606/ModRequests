<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_ServiceHMG</defName>
    <label>Service HMG bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_ServiceHMG</defName>
    <label>Service HMG</label>
    <description>A heavy-duty, belt fed heavy machine gun firing lower-caliber rounds than other weapons in it's field, though with a much more ergonomic profile for infantry use while still maintaining the logistical profile of a mountable machine gun.</description>
    <graphicData>
      <texPath>Weapon/ServiceHMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>10.5</Mass>
      <AccuracyTouch>0.28</AccuracyTouch>
      <AccuracyShort>0.40</AccuracyShort>
      <AccuracyMedium>0.42</AccuracyMedium>
      <AccuracyLong>0.3</AccuracyLong>
      <RangedWeapon_Cooldown>3.4</RangedWeapon_Cooldown>
    </statBases>
	    <equippedStatOffsets>
      <MoveSpeed>-0.2</MoveSpeed>
    </equippedStatOffsets>
    <weaponTags>
      <li>Heavy</li>
      <li>GunHeavy</li>
    </weaponTags>
    <costList>
      <Steel>100</Steel>
      <WoodLog>25</WoodLog>
	  <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <recipeMaker>
	  <researchPrerequisites>
	  <li>Fabrication</li>
	  <li>GasOperation</li>
	  </researchPrerequisites>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ServiceHMG</defaultProjectile>
        <warmupTime>1.8</warmupTime>
        <range>26.9</range>
	    <burstShotCount>10</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>Shot_HeavySMG</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>8</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>13</power>
        <cooldownTime>3</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>13</power>
        <cooldownTime>3</cooldownTime>
      </li>
    </tools>
  </ThingDef>
 </Defs>