<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_VarmitRifle</defName>
		<label>Varmit Rifle</label>
		<description>A very low-caliber rifle popular amongst urbworld farmers for its pest control ability. Accurate and long-ranged, but very weak.</description>
		<graphicData>
			<texPath>Weapon/VarmitRifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
	  <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
		<statBases>
			<WorkToMake>7000</WorkToMake>
			<Mass>2.8</Mass>
			<AccuracyTouch>0.80</AccuracyTouch>
			<AccuracyShort>0.76</AccuracyShort>
			<AccuracyMedium>0.72</AccuracyMedium>
			<AccuracyLong>0.64</AccuracyLong>
			<RangedWeapon_Cooldown>.8</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
        <li>SimpleGun</li>
        </weaponTags>
		<costList>
			<Steel>35</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
    <verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_VarmitRifle</defaultProjectile>
				<warmupTime>.8</warmupTime>
				<range>32.9</range>
				<burstShotCount>1</burstShotCount>
				<ticksBetweenBurstShots>9</ticksBetweenBurstShots>
				<soundCast>Shot_MachinePistol</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_VarmitRifle</defName>
    <label>Varmit rifle bullet</label>
    <graphicData>
      <texPath>Weapon/Bullet_Tiny</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>6</damageAmountBase>
      <speed>60</speed>
    </projectile>
  </ThingDef>
 </Defs>