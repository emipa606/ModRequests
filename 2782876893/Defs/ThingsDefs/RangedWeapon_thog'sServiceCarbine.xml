<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_ServiceCarbine</defName>
		<label>Service Carbine</label>
		<description>A shorter-barreled rifle of common design, popular amongst raider parties for its durability and compact size which lends to ease of carry over long distances.</description>
		<graphicData>
			<texPath>Weapon/ServiceCarbine</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
		<statBases>
			<WorkToMake>30000</WorkToMake>
			<Mass>3</Mass>
			<AccuracyTouch>0.78</AccuracyTouch>
			<AccuracyShort>0.62</AccuracyShort>
			<AccuracyMedium>0.54</AccuracyMedium>
			<AccuracyLong>0.40</AccuracyLong>
			<RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
		<li>SimpleGun</li>
        </weaponTags>
		<costList>
			<Steel>45</Steel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
    <verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_ServiceCarbine</defaultProjectile>
				<warmupTime>.8</warmupTime>
				<range>26.9</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<soundCast>Shot_HeavySMG</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_ServiceCarbine</defName>
    <label>service carbine bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <speed>74</speed>
    </projectile>
  </ThingDef>
 </Defs>