<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_ServiceCarbineBayonet</defName>
		<label>Service CarbineBayonet</label>
		<description>A shorter-barreled rifle of common design, popular amongst raider parties for its durability and compact size which lends to ease of carry over long distances. This one is equipped with a bayonet to improve survivability in CQC.</description>
		<graphicData>
			<texPath>Weapon/ServiceCarbineBayonet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
		<statBases>
			<WorkToMake>32000</WorkToMake>
			<Mass>3.25</Mass>
			<AccuracyTouch>0.78</AccuracyTouch>
			<AccuracyShort>0.62</AccuracyShort>
			<AccuracyMedium>0.54</AccuracyMedium>
			<AccuracyLong>0.40</AccuracyLong>
			<RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
		<li>SimpleGun</li>
        </weaponTags>
		<costList>
			<Steel>55</Steel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
    <verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_ServiceCarbine</defaultProjectile>
				<warmupTime>.8</warmupTime>
				<range>26.9</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<soundCast>Shot_HeavySMG</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>bayonet</label>
        <capacities>
		  <li>Poke</li>
          <li>Stab</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>
 </Defs>