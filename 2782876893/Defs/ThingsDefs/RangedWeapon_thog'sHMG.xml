<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HMG</defName>
    <label>HMG bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>25</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <speed>85</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_HMG</defName>
    <label>HMG</label>
    <description>A heavy-duty, belt fed heavy machine gun firing high-caliber slugs meant to defeat light vehicles and heavy infantry. Some madman has jerry rigged a minigun-style grip to the rear in place of a more traditional paddle, and a chainsaw-esque front handle to allow for someone to carry this - likely in power armor. Impossible to use in close quarters.</description>
    <graphicData>
      <texPath>Weapon/HMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>38000</WorkToMake>
      <Mass>38</Mass>
      <AccuracyTouch>0.25</AccuracyTouch>
      <AccuracyShort>0.36</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>4.5</RangedWeapon_Cooldown>
    </statBases>
	    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
    </equippedStatOffsets>
    <weaponTags>
      <li>Heavy</li>
      <li>GunHeavy</li>
    </weaponTags>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>15</ComponentIndustrial>
    </costList>
    <recipeMaker>
	  <researchPrerequisites>
	  <li>Fabrication</li>
	  <li>PrecisionRifling</li>
	  </researchPrerequisites>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HMG</defaultProjectile>
        <warmupTime>1.8</warmupTime>
		<minRange>2.5</minRange>
        <range>27.9</range>
	    <burstShotCount>9</burstShotCount>
        <ticksBetweenBurstShots>17</ticksBetweenBurstShots>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>16</power>
        <cooldownTime>3</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>16</power>
        <cooldownTime>3</cooldownTime>
      </li>
    </tools>
  </ThingDef>
 </Defs>