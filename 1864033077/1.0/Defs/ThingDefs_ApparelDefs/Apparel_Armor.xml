	    <!-- ======================================= Load Carrying Vest =======================================-->
  
  <ThingDef ParentName="RHArmorMachineableBase_British">
    <defName>RHApparel_LoadCarryingVest_RAF</defName>
    <label>load carrying Jerkin (RAF)</label>
    <description>A load carrying vest designed for air crew, lots of pouches for survival equipment and a floating vest in the case of a crash near a body of water. This carrier vest is fitted with plate armour.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Display/Armor/LoadCarryingVest_RAF</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Mass>3.2</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
	  <WorkSpeedGlobal>0.10</WorkSpeedGlobal>
	  <ForagedNutritionPerDay>1.0</ForagedNutritionPerDay>
	  <Flammability>-1.0</Flammability>
    </equippedStatOffsets>
    <thingCategories>
      <li>RHApparel_BodyArmor</li>
    </thingCategories>
    <costList>
      <Cloth>32</Cloth>
      <Steel>62</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <apparel>
	<careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Armor/LoadCarryingVest_RAF</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <!--<li>IndustrialMilitaryAdvanced</li>-->
        <li>RH_Armor_RAFArmor</li>
		<li>RH_Armor_BritishMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
