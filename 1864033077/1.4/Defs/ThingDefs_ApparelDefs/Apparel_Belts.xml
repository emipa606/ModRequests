<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ALICE -->

  <ThingDef ParentName="RHApparelMakeableBase_British">
    <defName>RNApparel_Harness_PLCE_MTP</defName>
    <label>webbing PLCE</label>
    <description>Personal Load Carrying Equipment (PLCE) is one of several current tactical webbing systems of the British Armed Forces. Dependant upon the year of design, and the decade of introduction, the webbing system was designated, and is commonly referred to, as either the 85 Pattern, the 90 Pattern or the 95 Pattern webbing.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <graphicData>
      <texPath>Things/Apparel/Display/Armor/PLCE_MTP_Harness</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
	  <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>1200</WorkToMake>
      <Mass>1.5</Mass>
	  <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	
	<equippedStatOffsets>
	  <AimingDelayFactor>-0.10</AimingDelayFactor>
	  <CarryingCapacity>20</CarryingCapacity>
	  <MedicalTendSpeed>0.10</MedicalTendSpeed>
	</equippedStatOffsets>
	
    <thingCategories>
      <li>RHApparel_Belts</li>
    </thingCategories>
		<!--<generateAllowChance>0.15</generateAllowChance>-->
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
	  <wornGraphicPath>Things/Apparel/Belt/PLCE_MTP_Harness</wornGraphicPath>
<wornGraphicData>
  <renderUtilityAsPack>false</renderUtilityAsPack>
</wornGraphicData>	  
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>RH_Belt_BritishMilitary</li>
		<li>PassiveCamo_Multi_High</li>
      </tags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
  </ThingDef>

</Defs>
