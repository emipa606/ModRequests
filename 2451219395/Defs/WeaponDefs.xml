<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- Armor -->
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>DishonoredCrossbow</defName>
    <label>crossbow</label>
    <description>A silent, exotic weapon crafted from the finest materials, the crossbow is a good choice for the silent assassin.</description>
    <graphicData>
      <texPath>Weapons/Crossbow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.2</drawSize>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <techLevel>Medieval</techLevel>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>1.5</Mass>
      <AccuracyTouch>0.7</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRangedDecent</li>
    </weaponTags>
    <recipeMaker>
	  <recipeUsers>
		<li>FueledSmithy</li>
		<li>ElectricSmithy</li>
	  </recipeUsers>
      <researchPrerequisite>RecurveBow</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DishonoredCrossbowBolt</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>21.9</range>
        <soundCast>Bow_Recurve</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>DishonoredCrossbowBolt</defName>
    <label>crossbow bolt</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
