<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="CavePlantBase">
		<defName>PlantLiquoriceroot</defName>
		<label>Liquorice Plant</label>
		<description>A red and yellow fungal stalk that resembles candy coated liquorice.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>1</Beauty>
			<Nutrition>0.20</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Crops/Liquoriceroot</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<pathCost>10</pathCost>
		<plant>
			<neverBlightable>true</neverBlightable>
			<fertilitySensitivity>0.4</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RawLiquoriceroot</harvestedThingDef>
			<harvestYield>8</harvestYield>
            <sowResearchPrerequisites>
            <li>AlienAgriculture</li>
            </sowResearchPrerequisites>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<sowMinSkill>8</sowMinSkill>
			<topWindExposure>0.1</topWindExposure>
			<growDays>7</growDays>
			<visualSizeRange>0.3~1.2</visualSizeRange>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>5</wildClusterWeight>
			<purpose>Food</purpose>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(252,68,78,0)</glowColor>
			</li>
		</comps>
	</ThingDef>

