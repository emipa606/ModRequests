<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef ParentName="DiseaseBase">
    <defName>HearingDamage</defName>
    <label>Hearing damage</label>
    <description>Temporary deafness caused by prolonged exposure to gunfire.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(255, 169, 56)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-4</severityPerDay>
      </li>
      <li Class="HediffCompProperties_Discoverable">
        <sendLetterWhenDiscovered>false</sendLetterWhenDiscovered>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0.10</minSeverity>
        <label>Initial</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.02</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <painOffset>0.02</painOffset>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <label>Medium</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
        <painOffset>0.05</painOffset>
      </li>
      <li>
        <minSeverity>0.50</minSeverity>
        <label>Severe</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.07</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
        <painOffset>0.15</painOffset>
      </li>
      <li>
        <minSeverity>0.75</minSeverity>
        <label>Very severe</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.65</offset>
          </li>
        </capMods>
        <painOffset>0.20</painOffset>
      </li>
      <li>
        <minSeverity>0.95</minSeverity>
        <label>Extreme</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.99</offset>
          </li>
        </capMods>
        <painOffset>0.25</painOffset>
      </li>
    </stages>
  </HediffDef>
</Defs>