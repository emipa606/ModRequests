<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <HediffDef>
    <defName>adrenalinedump</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Adrenaline dump</label>
    <labelNoun>an adrenaline dump</labelNoun>
    <description>A rush of adrenaline temporarily boosts moving capabilitites and numbs the perception of pain.</description>
    <defaultLabelColor>(25, 255, 136)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.75</severityPerDay>
        <showHoursToRecover>false</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <label>tiny amount</label>
        <painFactor>0.9</painFactor>
        <painOffset>-0.05</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>small amount</label>
        <minSeverity>0.2</minSeverity>
        <painFactor>0.9</painFactor>
        <painOffset>-0.10</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.12</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>medium amount</label>
        <minSeverity>0.3</minSeverity>
        <painFactor>0.8</painFactor>
        <painOffset>-0.10</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>high amount</label>
        <minSeverity>0.4</minSeverity>
        <painFactor>0.75</painFactor>
        <painOffset>-0.10</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme amount</label>
        <minSeverity>0.8</minSeverity>
        <painFactor>0.75</painFactor>
        <painOffset>-0.20</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>