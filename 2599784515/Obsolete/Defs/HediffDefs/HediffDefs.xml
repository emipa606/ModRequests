<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!---->
	<HediffDef>
		<defName>DimonSever000_MentalExhaustion</defName>
		<label>Mental exhaustion</label>
		<description>Exhaustion caused by exposure to chaotic psionic waves. May cause loss of consciousness, but generally harmless.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<lethalSeverity>1</lethalSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.5</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<label>medium</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.8</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>severe</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<!---->
</Defs>
