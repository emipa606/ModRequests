<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_MountainAir</defName>
		<durationDays>3</durationDays>
		<stages>
			<li>
				<label>mountain air</label>
				<description>I feel the freshness of the mountains.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_SeaAir</defName>
		<durationDays>3</durationDays>
		<stages>
			<li>
				<label>sea air</label>
				<description>I feel the freshness of the sea.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_DeathOfDistantStar</defName>
		<durationDays>5</durationDays>
		<stages>
			<li>
				<label>death of distant star</label>
				<description>It is extraordinarily exciting to watch the death of a star years after its actual death.</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_ParadeOfPlanets</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>parade of planets</label>
				<description>I happened to look at the parade of the planets. An interesting sight.</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_CatJoin</defName>
		<durationDays>3</durationDays>
		<stages>
			<li>
				<label>lost cat</label>
				<description>An abandoned cat joined us. Nicely.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_MentalExhaustion</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>DimonSever000_MentalExhaustion</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>initial mental exhaustion</label>
				<description>My thoughts are confused.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>medium mental exhaustion</label>
				<description>What is this endless noise? When will it end?</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
			<li>
				<label>severe mental exhaustion</label>
				<description>Something is breaking my head! Stop that!</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
			<li>
				<label>extreme mental exhaustion</label>
				<description>I'm devastated and crushed...</description>
				<baseMoodEffect>-12</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_KillingBadForester</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>killing a bad forester</label>
				<description>We killed a seemingly innocent person. After a search of the house, many murder weapons and several victims were found.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_KillingGoodForester</defName>
		<durationDays>10</durationDays>
		<stages>
			<li>
				<label>killing a good forester</label>
				<description>We robbed a house and killed an innocent person. Why?!</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_RestWithForester</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>rest in the forest</label>
				<description>The forester fed us and let us sleep in his house. Apparently he does not often see people and is glad to meet.</description>
				<baseMoodEffect>15</baseMoodEffect>
			</li>
		</stages>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
	</ThoughtDef>
	<!---->
	<ThoughtDef>
		<defName>DimonSever000_ForesterDeceit</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>forester deceit</label>
				<description>How could he do this? We did believe him!</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
	</ThoughtDef>
	<!---->
</Defs>
