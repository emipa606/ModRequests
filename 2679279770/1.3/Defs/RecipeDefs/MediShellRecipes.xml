<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RecipeDef Name="MediShellRecipe" Abstract="True">
		<jobString>Making preindustrial shells.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<workAmount>1500</workAmount>
		<recipeUsers>
			<li>TableStonecutter</li>	  
		</recipeUsers>	
		<allowMixingIngredients>true</allowMixingIngredients>
		<researchPrerequisite>Stonecutting</researchPrerequisite>
        <skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
	</RecipeDef>

	<RecipeDef ParentName="MediShellRecipe">
		<defName>make_MediShell_GreekFireVase</defName>
			<label>make Greek Fire vases</label>
			<description>Roughly cut vessels out of stone, then fill them with chemfuel before sealing them with wood and wax.</description>		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
            <li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneChunks</li>
			</categories>
            <thingDefs>
                <li>WoodLog</li>
                <li>Chemfuel</li>
            </thingDefs>
		</fixedIngredientFilter>
		<products>
			<Shell_GreekFire>1</Shell_GreekFire>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="MediShellRecipe">
		<defName>make_MediShell_SmokeVase</defName>
			<label>make smoke vases</label>
			<description>Roughly cut vessels out of stone, then fill them fill with soaked plant matter. Seal with wax and wood.</description>
			<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
            <li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Hay</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneChunks</li>
			</categories>
            <thingDefs>
                <li>WoodLog</li>
                <li>Chemfuel</li>
				<li>Hay</li>
            </thingDefs>
		</fixedIngredientFilter>
		<products>
			<Shell_SmokeVase>1</Shell_SmokeVase>
		</products>
	</RecipeDef>

<RecipeDef ParentName="MediShellRecipe">
		<defName>make_MediShell_MediBomb</defName>
			<label>make medieval bombs</label>
			<description>Roughly cut vessels out of stone, then fill them fill metal scraps and explosives.</description>
			<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
            <li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			            <li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneChunks</li>
			</categories>
            <thingDefs>
                <li>WoodLog</li>
                <li>Chemfuel</li>
				<li>Steel</li>
            </thingDefs>
		</fixedIngredientFilter>
		<products>
			<Shell_MedievalBomb>1</Shell_MedievalBomb>
		</products>
	</RecipeDef>

</Defs>