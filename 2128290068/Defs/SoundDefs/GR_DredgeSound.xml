<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <SoundDef>
    <defName>GR_Dredge_Start</defName>
    <context>MapOnly</context>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Recipes/GR_DredgeStart</clipFolderPath>
          </li>
        </grains>
        <volumeRange>
          <min>5</min>
          <max>5</max>
        </volumeRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

   <SoundDef>
    <defName>GR_Dredge_Stop</defName>
    <context>MapOnly</context>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Recipes/GR_DredgeStop</clipFolderPath>
          </li>
        </grains>
        <volumeRange>
          <min>5</min>
          <max>5</max>
        </volumeRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>
 
  <SoundDef>
    <defName>GR_DredgeSound</defName>
    <context>MapOnly</context>
	<sustain>True</sustain>  
    <eventNames />
    <maxSimultaneous>1</maxSimultaneous>  
    <priorityMode>PrioritizeNearest</priorityMode>  
	<sustainStartSound>GR_Dredge_Start</sustainStartSound>
	<sustainStopSound>GR_Dredge_Stop</sustainStopSound>
    <subSounds>
      <li>
	  <muteWhenPaused>True</muteWhenPaused>   
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Recipes/GR_DredgeWork</clipPath>
          </li>
        </grains>
        <volumeRange>
          <min>5</min>
          <max>5</max>
        </volumeRange>
		<sustainLoop>False</sustainLoop>

      </li>
    </subSounds>
  </SoundDef>

</Defs>