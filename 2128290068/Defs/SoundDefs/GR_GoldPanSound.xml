<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <SoundDef>
    <defName>GR_GoldPanSound_Stop</defName>
    <context>MapOnly</context>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Recipes/GR_GoldPanSound_Stop</clipFolderPath>
          </li>
        </grains>
        <volumeRange>
          <min>50</min>
          <max>50</max>
        </volumeRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>GR_GoldPanSound</defName>
    <context>MapOnly</context>
	<sustain>True</sustain>  
    <eventNames />
    <maxSimultaneous>1</maxSimultaneous>  
    <priorityMode>PrioritizeNearest</priorityMode>  
	<sustainStopSound>GR_GoldPanSound_Stop</sustainStopSound>  
    <subSounds>
      <li>
	  <muteWhenPaused>True</muteWhenPaused>   
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Recipes/GR_GoldPanSound_Working</clipPath>
          </li>
        </grains>
        <volumeRange>
          <min>50</min>
          <max>50</max>
        </volumeRange>
        <pitchRange>
          <min>1</min>
          <max>1</max>
        </pitchRange>
		<sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

</Defs>