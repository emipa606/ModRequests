<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <SoundDef>
    <defName>GR_Table_Start</defName>
    <context>MapOnly</context>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Recipes/GR_Table_Start</clipFolderPath>
          </li>
        </grains>
        <volumeRange>
          <min>25</min>
          <max>25</max>
        </volumeRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

   <SoundDef>
    <defName>GR_Table_Stop</defName>
    <context>MapOnly</context>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Recipes/GR_Table_Stop</clipFolderPath>
          </li>
        </grains>
        <volumeRange>
          <min>25</min>
          <max>25</max>
        </volumeRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>
 
  <SoundDef>
    <defName>GR_TableSound</defName>
    <context>MapOnly</context>
	<sustain>True</sustain>  
    <eventNames />
    <maxSimultaneous>1</maxSimultaneous>  
    <priorityMode>PrioritizeNearest</priorityMode>  
	<sustainStartSound>GR_Table_Start</sustainStartSound>
	<sustainStopSound>GR_Table_Stop</sustainStopSound>
    <subSounds>
      <li>
	  <muteWhenPaused>True</muteWhenPaused>   
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Recipes/GR_Table_Work</clipPath>
          </li>
        </grains>
        <volumeRange>
          <min>25</min>
          <max>25</max>
        </volumeRange>
		<sustainLoop>False</sustainLoop>

      </li>
    </subSounds>
  </SoundDef>

</Defs>