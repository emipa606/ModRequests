  <!--> Dredge <-->
 
     <ThingDef ParentName="GR_BuildingBase">
    <defName>GR_Dredge</defName>
    <label>Dredge</label>
    <description>An improvised dredge. Allows your pawns to pump up the sedement and filter it.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/GR_Dredge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,7)</drawSize>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <statBases>
      <WorkToBuild>1000</WorkToBuild>
	  <Cleanliness>-5</Cleanliness>
    </statBases>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>False</useHitPoints>
    <size>(4,7)</size>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
    </building>
	<costList>
      <Steel>180</Steel>
	  <ComponentIndustrial>15</ComponentIndustrial>
	  <Chemfuel>50</Chemfuel>
    </costList>
    <terrainAffordanceNeeded>MovingFluid</terrainAffordanceNeeded>
	<comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>20.0</fuelConsumptionRate>
        <fuelCapacity>75.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
	       <li Class="CompProperties_Breakdownable"/>
	 </comps>
  </ThingDef>

  <!--> Table <-->
 
     <ThingDef ParentName="GR_BuildingBase">
    <defName>GR_Table</defName>
    <label>Gold shaking table</label>
    <description>A automated gold shaking table. It will extract the gold from filtered sedement.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/GR_Goldwash_Table</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <statBases>
      <WorkToBuild>600</WorkToBuild>
	  <Cleanliness>-5</Cleanliness>
    </statBases>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>False</useHitPoints>
    <size>(3,3)</size>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
	<costList>
      <Steel>250</Steel>
	  <ComponentIndustrial>12</ComponentIndustrial>
    </costList>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
    </building>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
	<comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>130.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>GR_SedementFiltered</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
		<li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>400</basePowerConsumption>
		</li>
	 </comps>
  </ThingDef>
  
</Defs>