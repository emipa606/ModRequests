<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <SoundDef>
    <defName>GR_Dig_Start</defName>
    <context>MapOnly</context>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Recipes/GR_Dig_Start</clipFolderPath>
          </li>
        </grains>
        <volumeRange>
          <min>30</min>
          <max>30</max>
        </volumeRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>GR_Dig_Stop</defName>
    <context>MapOnly</context>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Recipes/GR_Dig_Stop</clipFolderPath>
          </li>
        </grains>
        <volumeRange>
          <min>30</min>
          <max>30</max>
        </volumeRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>
  
  <SoundDef>
    <defName>GR_DigSound</defName>
    <context>MapOnly</context>
	<sustain>True</sustain>  
    <eventNames />
    <maxSimultaneous>1</maxSimultaneous>  
    <priorityMode>PrioritizeNearest</priorityMode>  
	<sustainStartSound>GR_Dig_Start</sustainStartSound>
	<sustainStopSound>GR_Dig_Stop</sustainStopSound>  
    <subSounds>
      <li>
	  <muteWhenPaused>True</muteWhenPaused>   
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Recipes/GR_Dig_Working</clipPath>
          </li>
        </grains>
        <volumeRange>
          <min>30</min>
          <max>30</max>
        </volumeRange>
        <pitchRange>
          <min>1</min>
          <max>1</max>
        </pitchRange>
		<sustainLoop>False</sustainLoop>
        <sustainIntervalRange>
          <min>0.4705882</min>        
          <max>0.8941177</max>
        </sustainIntervalRange>
      </li>
    </subSounds>
  </SoundDef>

</Defs>