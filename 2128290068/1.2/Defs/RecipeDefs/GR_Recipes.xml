<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--GOLD PAN-->

	<RecipeDef>
		<defName>GR_GoldPanUse</defName>
		<label>use gold pan</label>
		<description>Using your gold pan at the riverside to find some gold nuggets.</description>
		<jobString>Using gold pan.</jobString>
		<workSpeedStat>MiningSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<soundWorking>GR_GoldPanSound</soundWorking>
		<workAmount>1000</workAmount>
		<products>
			<Gold>1</Gold>
		</products>
		<workSkill>Mining</workSkill>
  		<recipeUsers>
			<li>GR_Pan</li>
		</recipeUsers>
	</RecipeDef>
	
	<RecipeDef>
		<defName>GR_WashOutSedement</defName>
		<label>wash out sedement</label>
		<description>Washing out dug up sedement from the river to find some gold nuggets.</description>
		<jobString>Washing out sedement.</jobString>
		<workSpeedStat>MiningSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<soundWorking>GR_GoldPanSound</soundWorking>
		<workAmount>300</workAmount>
		<ingredients>
			<li>
			    <filter>
			      <thingDefs>
			        <li>GR_Sedement</li>
	     			 </thingDefs>
	  		    </filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
			   <li>GR_Sedement</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Gold>1</Gold>
		</products>
		<workSkill>Mining</workSkill>
  		<recipeUsers>
			<li>GR_Pan</li>
		</recipeUsers>
	</RecipeDef>
	
		<RecipeDef>
		<defName>GR_WashOutFilteredSedement</defName>
		<label>wash out filtered sedement</label>
		<description>Washing out filtered sedement from the river to find some gold nuggets.</description>
		<jobString>Washing out filtered sedement.</jobString>
		<workSpeedStat>MiningSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<soundWorking>GR_GoldPanSound</soundWorking>
		<workAmount>300</workAmount>
		<ingredients>
			<li>
			    <filter>
			      <thingDefs>
			        <li>GR_SedementFiltered</li>
	     			 </thingDefs>
	  		    </filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
			   <li>GR_SedementFiltered</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Gold>3</Gold>
		</products>
		<workSkill>Mining</workSkill>
  		<recipeUsers>
			<li>GR_Pan</li>
		</recipeUsers>
	</RecipeDef>
	
	
