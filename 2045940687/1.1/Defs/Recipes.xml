<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef>
    <defName>Fertilizer</defName>
    <label>Make fertilizer</label>
    <description>Through time, heat, and occasional stirring, turn raw compost into fertilizer.</description>
    <jobString>Composting</jobString>
    <effectWorking>Cook</effectWorking>
    <workSkill>Cooking</workSkill>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <workAmount>600000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCompost</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawCompost</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Fertilizer>60</Fertilizer>
    </products>
  </RecipeDef>

