<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="MeleeWeaponUltratech">
        <defName>TRAHS_MeleeWeapon_ZackySword</defName>
        <label>zacky's sword</label>
        <description>A very thin, very light and very sharp sword made from an unknown energy. It can be swung swiftly due to its lightweight property.</description>
        <soundInteract>Interact_PlasmaSword</soundInteract>
        <meleeHitSound>MeleeHit_PlasmaSword</meleeHitSound>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <relicChance>3</relicChance>
        <statBases>
            <Mass>0.5</Mass>
        </statBases>
        <weaponClasses>
          <li>MeleePiercer</li>
        </weaponClasses>
        <graphicData>
          <texPath>TRAHS/Things/Item/Equipment/WeaponMelee/ZackySword</texPath>
          <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <tools>
          <li>
            <label>handle</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>10</power>
            <cooldownTime>1</cooldownTime>
          </li>
          <li>
            <label>point</label>
            <capacities>
              <li>Stab</li>
            </capacities>
            <power>17</power>
            <cooldownTime>1.3</cooldownTime>
          </li>
          <li>
            <label>edge</label>
            <capacities>
              <li>Cut</li>
            </capacities>
            <power>17</power>
            <cooldownTime>1.3</cooldownTime>
          </li>
        </tools>
      </ThingDef>

</Defs>