<Defs>

  <ThingDef ParentName="ZAYINGun">
    <defName>LC_EGO_Soda</defName>
    <label>(LC) Soda</label>
    <techLevel>Ultra</techLevel>
    <description>E.G.O from L-Corp\n"Somewhere in the distance, you can hear seagulls."- Opened Can of Wellcheers</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/EGOSoda</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <MarketValue>400</MarketValue>
      <Mass>1</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.30</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>LC_Bullet_Soda</defaultProjectile>
        <warmupTime>0.25</warmupTime>
        <range>20</range>
        <soundCast>NormalGun</soundCast>
        <muzzleFlashScale>8</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

 <ThingDef ParentName="ZAYIN">
    <defName>LC_EGO_Penitence</defName>
