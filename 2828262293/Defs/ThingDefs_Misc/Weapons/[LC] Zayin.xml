    <statBases>
      <MarketValue>500</MarketValue>
      <Mass>1.2</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
	  <li>
        <label>handle</label>
        <capacities>
          <li>WhiteBlunt</li>
		  <li>WhitePoke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.5</cooldownTime>
		<soundMeleeHit>EGO_Hit</soundMeleeHit>
		<chanceFactor>3</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>WhiteBlunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
		<soundMeleeHit>EGO_Mace</soundMeleeHit>
		<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
		<chanceFactor>3</chanceFactor>
      </li>
    </tools>
    <modExtensions>
      <li Class="LobotomyCorp.LCDamage">
        <convert>
          <li>
            <type>Tool</type>
            <id>0</id>
            <LCCapacities>
              <li>WhiteBlunt</li>
            </LCCapacities>
            <noLCCapacities>
              <li>Blunt</li>
            </noLCCapacities>
          </li>
		  <li>
            <type>Tool</type>
            <id>1</id>
            <LCCapacities>
			  <li>WhitePoke</li>
            </LCCapacities>
            <noLCCapacities>
			  <li>Poke</li>
            </noLCCapacities>
          </li>
        </convert>
      </li>
    </modExtensions>
  </ThingDef>

