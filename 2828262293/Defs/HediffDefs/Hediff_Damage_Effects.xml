  <HediffDef ParentName="InjuryBase">
    <defName>Whitewound</defName>
    <label>vanishing wound</label>
    <labelNoun>a vanishing wound</labelNoun>
    <description>A wound left by a white damage weapon. When you look again, it is gone, was it even there to begin with?.</description>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>1~2</disappearsAfterTicks>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.0</painPerSeverity>
      <bleedRate>0.00</bleedRate>
      <destroyedLabel>???</destroyedLabel>
    </injuryProps>
  </HediffDef>

  <HediffDef>
    <defName>LC_Slow</defName>
    <label>slowness</label>
	<hediffClass>HediffWithComps</hediffClass>
    <description>A reduction in locomotion due to miscellaneous reasons.</description>
    <isBad>true</isBad>
	<maxSeverity>1</maxSeverity>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.4</setMax>
          </li>
        </capMods>
      </li>
    </stages>
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>1250</disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>LC_Fragile</defName>
    <label>fragile</label>
	<hediffClass>HediffWithComps</hediffClass>
    <description>The body of this person has becomed slightly.</description>
    <isBad>true</isBad>
	<maxSeverity>1</maxSeverity>
    <stages>
      <li>
        <statOffsets>
          <IncomingDamageFactor>0.25</IncomingDamageFactor>
        </statOffsets>
      </li>
    </stages>
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>1250</disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
</Defs>