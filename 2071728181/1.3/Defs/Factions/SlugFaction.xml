<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef>
		<defName>SlugFaction</defName>
		<!-- TribeSlug-->

		<label>Awkward gasteropods</label>
		<description>Far from nebula homelands slugs</description>
		<pawnsPlural>untrustworthy slugs</pawnsPlural>

		<settlementGenerationWeight>.4</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>

		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>10</configurationListOrderPriority>

		<factionIconPath>Slug/npc</factionIconPath>
		<settlementTexturePath>Slug/npcZoom</settlementTexturePath>

		<canSiege>true</canSiege>
		<canMakeRandomly>true</canMakeRandomly>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(40, 2)</li>
				<li>(300, 1)</li>
			</points>
		</raidCommonalityFromPointsCurve>
		<canStageAttacks>true</canStageAttacks>

		<factionNameMaker>NamerSlugFaction</factionNameMaker>
		<settlementNameMaker>NamerBaseSlugVillage</settlementNameMaker>

		<techLevel>Industrial</techLevel>

		<backstoryFilters>
			<li>
				<categories>
					<li>Raider</li>
					<li>SlugBackstory</li>
				</categories>
			</li>
		</backstoryFilters>

		<allowedCultures>
			<li>Astropolitan</li>
			<li>Kriminul</li>
		</allowedCultures>

		<!--
		<startingGoodwill>
			<min>-30</min>
			<max>-10</max>
		</startingGoodwill>
		<naturalColonyGoodwill>
			<min>-20</min>
			<max>5</max>
		</naturalColonyGoodwill>
		-->

		<visitorTraderKinds>
			<li>Visitor_Neolithic_Standard</li>
		</visitorTraderKinds>
		<caravanTraderKinds>
			<li>Caravan_Neolithic_BulkGoods</li>
			<li>Caravan_Neolithic_WarMerchant</li>
			<li>Caravan_Neolithic_Slaver</li>
		</caravanTraderKinds>
		<baseTraderKinds>
			<li>Base_Neolithic_Standard</li>
		</baseTraderKinds>

		<!-- https://www.color-hex.com/color-palette/90169 -->
		<colorSpectrum>
			<li>(255,155,231)</li>
			<!-- <li>(205,131,210)</li> -->
			<li>(255,147,100)</li>
			<li>(255,110,110)</li>
		</colorSpectrum>

		<mustStartOneEnemy>false</mustStartOneEnemy>
		<leaderTitle>Gasterovereign</leaderTitle>

		<allowedArrivalTemperatureRange>
			<min>-15</min>
			<max>30</max>
		</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(800, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>	
		<pawnGroupMakers>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<SlugColonist>20</SlugColonist>
					<SlugAddicted>10</SlugAddicted>
					<SlugGuard>5</SlugGuard>
				</options>
			</li>
			<li>
				<kindDef>Combat</kindDef>
				<options>
					<SlugColonist>50</SlugColonist>
					<SlugAddicted>40</SlugAddicted>
					<SlugGuard>90</SlugGuard>
					<SlugGrenadier>80</SlugGrenadier>
					<SlugHistSpeaker>10</SlugHistSpeaker>
					<SlugFighter>100</SlugFighter>
					<SlugHunter>50</SlugHunter>
					<SlugHistGuard>15</SlugHistGuard>
					<SlugShadowscale>5</SlugShadowscale>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<SlugTrader>8</SlugTrader>
					<SlugAddicted>1</SlugAddicted>
				</traders>
				<carriers>
					<Muffalo>1</Muffalo>
					<Alpaca>2</Alpaca>
				</carriers>
				<guards>
					<SlugColonist>50</SlugColonist>
					<SlugAddicted>40</SlugAddicted>
					<SlugGrenadier>80</SlugGrenadier>
					<SlugGuard>90</SlugGuard>
					<SlugFighter>100</SlugFighter>
					<SlugHunter>100</SlugHunter>
					<SlugHistGuard>80</SlugHistGuard>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<SlugColonist>50</SlugColonist>
					<SlugGuard>90</SlugGuard>
					<SlugHistSpeaker>50</SlugHistSpeaker>
					<SlugFighter>40</SlugFighter>
					<SlugHunter>50</SlugHunter>
					<SlugHistGuard>100</SlugHistGuard>
					<SlugShadowscale>100</SlugShadowscale>
				</options>
			</li>
		</pawnGroupMakers>
		
		<raidLootValueFromPointsCurve>
			<points>
				<li>(35,     15)</li>
				<li>(100,   125)</li>
				<li>(1000,  520)</li>
				<li>(2000,  850)</li>
				<li>(4000, 1080)</li>
			</points>
		</raidLootValueFromPointsCurve>
		
	</FactionDef>


</Defs>