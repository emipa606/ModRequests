<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
  <ThingDef Name="LTF_MindSpotBase" ParentName="BuildingBase" Abstract="true">
	
    <thingClass>Building</thingClass>
	
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>Standable</passability>
	<hasInteractionCell>false</hasInteractionCell>
	
	<drawerType>MapMeshAndRealTime</drawerType>
	
	<scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>false</useHitPoints>
	<drawDamagedOverlay>false</drawDamagedOverlay>
	<size>(1,1)</size>

    <rotatable>false</rotatable>
    <holdsRoof>false</holdsRoof>
    <mineable>false</mineable>	
	<!-- <randomizeRotationOnSpawn>true</randomizeRotationOnSpawn> -->
	
    <graphicData>
		<texPath>Things/AbilityBuilding/MindFondleSpot</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<drawSize>(1,1)</drawSize>
    </graphicData>
	
    <blockLight>false</blockLight>
	<blockWind>false</blockWind>
	
    <coversFloor>false</coversFloor>
    <neverMultiSelect>false</neverMultiSelect>
	
    <tickerType>Rare</tickerType>
	
    <statBases>
		<MaxHitPoints>200</MaxHitPoints>
		<WorkToBuild>3000</WorkToBuild>
    </statBases>
	
    <comps>
		<li>
			<compClass>CompColorable</compClass>
		</li>
		
		<li Class="CompProperties_Glower">
			<glowRadius>2</glowRadius>
			<glowColor>(113,141,117,0)</glowColor>
		</li>
		<li Class="CompProperties_Lifespan">
			<lifespanTicks>2000</lifespanTicks>
			<!-- about 33s -->
		</li>

		<!-- <li Class="LTF_Slug.CompProperties_LTF_MindFondleSpot"> -->
			<!-- <range>2.2</range> -->
		<!-- </li> -->
		
    </comps>
	
    <forceDebugSpawnable>true</forceDebugSpawnable>
	
    <building>
		<expandHomeArea>false</expandHomeArea>
		<repairable>false</repairable>
		<isInert>true</isInert>
		<ai_chillDestination>false</ai_chillDestination>
		<canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
		<deconstructible>false</deconstructible>
		<destroyShakeAmount>0</destroyShakeAmount>
    </building>
	
	<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
	
	<filthLeaving>Filth_SlugDew</filthLeaving>
	<!-- csharp overriden -->
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<!-- orange to purple -->
			<li><only>(255, 147, 0)</only></li>
			<li><only>(225, 115, 39)</only></li>
			<li><only>(199, 89, 75)</only></li>
			<li><only>(173, 61, 111)</only></li>
			<li><only>(147, 33, 145)</only></li>
			
			<!-- red to Indigo -->
			<li><only>(201, 27, 38)</only></li>
			<li><only>(156, 15, 95)</only></li>
			<li><only>(96, 4, 122)</only></li>
			
			<!-- light blue to dark blue -->
			<li><only>(116, 187, 251)</only></li>
			<li><only>(31, 117, 254)</only></li>
			<li><only>(0, 0, 139)</only></li>


		</options>
    </colorGenerator>

	
	</ThingDef>

	<ThingDef ParentName="LTF_MindSpotBase" >
		<defName>LTF_MindFlaySpot</defName>
		<label>Mind flay convergence</label>
		<description>Slug Mind flay ability fruit</description>
		
		<graphicData>
			<texPath>Things/AbilityBuilding/MindFlaySpot</texPath>
		</graphicData>
		
		<comps>
			<li Class="LTF_Slug.CompProperties_LTF_MindSpot">
				<range>2.2</range>
				<affectsHumanlike>true</affectsHumanlike>
				<affectsEnemies>true</affectsEnemies>
				<hediffAppliedLimit>18</hediffAppliedLimit>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="LTF_MindSpotBase" >
		<defName>LTF_MindFondleSpot</defName>
		<label>Mind fondle rug</label>
		<description>Slug Mind flay ability fruit</description>
		
		<graphicData>
			<texPath>Things/AbilityBuilding/MindFondleSpot</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		
		<comps>
			<li Class="LTF_Slug.CompProperties_LTF_MindSpot">
				<range>2.2</range>
				<affectsHumanlike>true</affectsHumanlike>
				<affectsColonists>true</affectsColonists>
				<hediffAppliedLimit>18</hediffAppliedLimit>
			</li>
		</comps>
	</ThingDef>
</Defs>
