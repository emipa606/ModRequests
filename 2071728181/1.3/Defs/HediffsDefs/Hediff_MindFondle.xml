<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
		<!-- Hediff_LTF_MindFondle-->
	<HediffDef Name="Hediff_LTF_MindFondle" ParentName="Hediff_LTF_MindBonusBase">
		<defName>Hediff_LTF_MindFondle</defName>
		<description>This psychic cuddle is focused on soothing the target.
Mind the backlash when the buffs dissapear.</description>

		<descriptionHyperlinks>
			<ThingDef>LTF_FondlingVestigialShell</ThingDef>
			<AbilityUser.AbilityDef>LTF_Slug_MindFondler</AbilityUser.AbilityDef>
			<HediffDef>Hediff_FondlingVestigialShell</HediffDef>
		</descriptionHyperlinks>

		<label>Mind fondled</label>
		<labelNoun>a staged confusion</labelNoun>

		<stages>
			<li>
			    <label>minor</label>
				<minSeverity>0.2</minSeverity>
				<painFactor>.95</painFactor>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>-.1</IncomingDamageFactor>
					<AimingDelayFactor>-.1</AimingDelayFactor>
				</statOffsets>
			</li>
			<li>
			    <label>serious</label>
				<minSeverity>0.4</minSeverity>
				
				<painFactor>.9</painFactor>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>-.175</IncomingDamageFactor>
					<AimingDelayFactor>-.175</AimingDelayFactor>
				</statOffsets>
			</li>
			<li>
			    <label>extreme</label>
				<minSeverity>0.7</minSeverity>
				
				<painFactor>.85</painFactor>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.3</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.3</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.3</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>-.25</IncomingDamageFactor>
					<AimingDelayFactor>-.25</AimingDelayFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
</Defs>