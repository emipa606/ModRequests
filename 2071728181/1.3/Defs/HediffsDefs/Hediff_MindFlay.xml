<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Hediff_LTF_MindFlayed -->
	<HediffDef Name="Hediff_LTF_MindFlay" ParentName="Hediff_LTF_MindMalusBase">
		<defName>Hediff_LTF_MindFlay</defName>

		<description>This psychic attack is focused on making the victim an easy and harmless target.</description>
		<descriptionHyperlinks>
			<ThingDef>VestigialShell</ThingDef>
			<AbilityUser.AbilityDef>LTF_Slug_MindFlayer</AbilityUser.AbilityDef>
		</descriptionHyperlinks>
		
		<label>Mind flayed</label>

		<stages>
			<li>
			    <label>minor</label>
				<minSeverity>0.2</minSeverity>
				<painFactor>1.05</painFactor>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>.1</IncomingDamageFactor>
					<AimingDelayFactor>.1</AimingDelayFactor>
				</statOffsets>
			</li>
			<li>
			    <label>serious</label>
				<minSeverity>0.4</minSeverity>
				
				<painFactor>1.1</painFactor>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>.175</IncomingDamageFactor>
					<AimingDelayFactor>.175</AimingDelayFactor>
				</statOffsets>
			</li>
			<li>
			    <label>extreme</label>
				<minSeverity>0.7</minSeverity>
				
				<painFactor>1.15</painFactor>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>.25</IncomingDamageFactor>
					<AimingDelayFactor>.25</AimingDelayFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
</Defs>