<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Hediffs are RimWorld's status effects. They can influence different pawn stats, represent diseases, and more -->
	
	<HediffDef Name="Hediff_LTF_MindBase" ParentName="NonRandom_Hediff_Base" Abstract="True">
		<hediffClass>HediffWithComps</hediffClass>
		
		<initialSeverity>.25</initialSeverity>

		<tendable>false</tendable>
		<makesAlert>false</makesAlert>

		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>1000~2000</disappearsAfterTicks>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef Name="Hediff_LTF_MindMalusBase" ParentName="Hediff_LTF_MindBase" Abstract="True">
		<defaultLabelColor>(.58, 0, .83)</defaultLabelColor>
	</HediffDef>
	
	<HediffDef Name="Hediff_LTF_MindBonusBase" ParentName="Hediff_LTF_MindBase" Abstract="True">
		<defaultLabelColor>(.54, .86, .15)</defaultLabelColor>
	</HediffDef>
	
</Defs>