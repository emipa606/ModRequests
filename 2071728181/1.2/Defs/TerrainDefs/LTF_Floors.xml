<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- kraptyl -->
  <!-- detemplate pour générer filth-->
	<TerrainDef ParentName="FloorBase">
		<defName>LTF_KraptylFloor</defName>
		<label>Kraptiles</label>
		<description>A lot of work for a discutable result.
		This ugly metal floor is awkward to walk on. it's like stepping on eggshells that would bite you if they could. Snow does not like it but fire does.</description>
		<texturePath>Terrain/Surfaces/Kraptyl</texturePath>
		<edgeType>Hard</edgeType>
		<constructEffect>ConstructMetal</constructEffect>
		
		<statBases>
			<Beauty>-5</Beauty>
			<WorkToBuild>1100</WorkToBuild>
			<Cleanliness>-5</Cleanliness>
			<Flammability>0.4</Flammability>
		</statBases>

		<burnedDef>BurnedWoodPlankFloor</burnedDef>
		<avoidWander>true</avoidWander>
		<holdSnow>false</holdSnow>
		<pathCost>20</pathCost>
		<!--<terrainFilthDef>FilthDirt</terrainFilthDef>-->
		
		<costList>
			<LTF_Kraptyl>2</LTF_Kraptyl>
		</costList>
		<!--
		<researchPrerequisites>
			<li>ResearchProjectDefName</li>
		</researchPrerequisites>
		-->

	</TerrainDef>
	<!-- Slugdew -->
	<TerrainDef ParentName="FloorBase">
		<defName>LTF_SlugDewFloor</defName>
		<label>Snot tiles</label>
		<description>A lot of work for a discutable result.
		This glue floor is really annoying to walk on. Dont get stuck in it.</description>
		<texturePath>Terrain/Surfaces/SlugDew</texturePath>
		<color>(230, 204, 255)</color>
		<edgeType>Fade</edgeType>
		<constructEffect>ConstructDirt</constructEffect>
		
		<statBases>
			<Beauty>-3</Beauty>
			<WorkToBuild>1500</WorkToBuild>
			<Cleanliness>-3</Cleanliness>
			<Flammability>0.05</Flammability>
		</statBases>
		<burnedDef>BurnedWoodPlankFloor</burnedDef>
		
		
		<takeFootprints>true</takeFootprints>
		<avoidWander>true</avoidWander>
		<holdSnow>true</holdSnow>
		<pathCost>75</pathCost>
		<passability>PassThroughOnly</passability>
<!--		<terrainFilthDef>FilthDirt</terrainFilthDef>-->
		
		<costList>
			<LTF_SlugDew>4</LTF_SlugDew>
			<WoodLog>2</WoodLog>
		</costList>
		<!--
		<researchPrerequisites>
			<li>ResearchProjectDefName</li>
		</researchPrerequisites>
		-->

	</TerrainDef>

</Defs>
