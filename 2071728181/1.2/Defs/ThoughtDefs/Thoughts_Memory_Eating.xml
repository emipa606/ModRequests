<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ======= Non Slug eating Gasteropod secretions ========= -->
	<ThoughtDef>
		<defName>AteGasteropodSecretionDirect</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>.8</durationDays>

		<stages>
			<li>
				<label>ate gasteropod secretions</label>
				<description>I ate some raw stomach-churning slug secretion. I would not wish that to anyone.</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>AteGasteropodSecretionAsIngredient</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>.8</durationDays>
		
		<stages>
			<li>
				<label>ate cooked gasteropod secretions</label>
				<description>I ate a meal cooked from pinkish, slimy gasteropod secretions. It tasted like gastric juice.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<!-- ======= Slug eating Gasteropod secretions ========= -->
	<ThoughtDef>
		<defName>AteGasteropodSecretionDirectAsSlug</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>.6</durationDays>

		<stages>
			<li>
				<label>ate someone's secretions</label>
				<description>I ate some slug secretions. Gargling with other people's squirts is not my cup of tea.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>AteGasteropodSecretionAsIngredientAsSlug</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>.8</durationDays>
		
		<stages>
			<li>
				<label>ate cooked secretions</label>
				<description>I ate a meal cooked from slimy gasteropod secretions. It tasted like toxic scum on a stagnant pool.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
