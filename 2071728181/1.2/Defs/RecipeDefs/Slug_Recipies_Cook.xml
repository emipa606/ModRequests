<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef>
    <defName>MakeSlugDewBeerawecka</defName>
    <label>make slug beerawecka</label>
    <description>Make a stupefying unrisen cake by combining raw fruits and slug dew.</description>
	<descriptionHyperlinks><ThingDef>LTF_SlugDewBeerawecka</ThingDef></descriptionHyperlinks>
	
    <jobString>Making slug beerawecka</jobString>
	
    <workAmount>600</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Surgery</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
	
    <allowMixingIngredients>true</allowMixingIngredients>
	<workSkill>Cooking</workSkill>
	<recipeUsers>
		<li>TableButcher</li>
	</recipeUsers>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
	<skillRequirements>
		<Cooking>3</Cooking>
	</skillRequirements>
	<researchPrerequisite>LTF_Research_Slug</researchPrerequisite>
	
	<!--<targetCountAdjustment>1</targetCountAdjustment>-->
	<!-- ingredient -->
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>LTF_SlugDew</li>
				</thingDefs>
			</filter>
			<count>25</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>RawBerries</li>
					<li>RawAgave</li>
				</thingDefs>
			</filter>
			<count>30</count>
		</li>
    </ingredients>
	
    <products>
		<LTF_SlugDewBeerawecka>15</LTF_SlugDewBeerawecka>
		<LTF_SlugDew>1</LTF_SlugDew>
    </products>

    <fixedIngredientFilter>
		<thingDefs>
			<li>LTF_SlugDew</li>
			<li>RawBerries</li>
			<li>RawAgave</li>
		</thingDefs>
    </fixedIngredientFilter>

  </RecipeDef>
  
</Defs>