					<li>
						<defName>pink_fluid</defName>
						<triggerOnFilthDef>
							<li>Filth_SlugDew</li>
						</triggerOnFilthDef>
						<moteDef>Mote_LTF_Slug_Pink_Footprint</moteDef>
					</li>
					<li>
						<defName>red_fluid</defName>
						<triggerOnFilthDef>
