<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<!-- green insectoid puddles -->	
	<HediffDef ParentName="Hediff_HiddenBase">
		<defName>Hediff_LTF_Slug_BloodDripping</defName>
		<!-- <defName>BNS_Hediff_BloodDripping_Green</defName> -->
		<hediffClass>HediffWithComps</hediffClass>
		
		<description>Hediff_LTF_Slug_BloodDripping blood puddles</description>
		<label>BloodDripping.LTF_Slug_Blood</label>
		
		<comps>
			<li Class="BloodDripping.HediffCompProperties_BloodDripping">
				<race>Alien_Slug</race>
				
				<period>40</period>
				<minPeriod>30</minPeriod>
				<maxPeriod>80</maxPeriod>
				
				<puddleMoteDef>
					<li>BNS_Mote_Blood_PiA</li>
					<li>BNS_Mote_Blood_PiB</li>
					<li>BNS_Mote_Blood_PiC</li>
					<li>BNS_Mote_Blood_PiD</li>
					<li>BNS_Mote_Blood_PiE</li>
					<li>BNS_Mote_Blood_PiF</li>
					<li>BNS_Mote_Blood_PiG</li>
				</puddleMoteDef>

				<randomScale>.6~.75</randomScale>
				<randomRotation>-15~15</randomRotation>
				
				<deathPuddleMoteContainsString>BNS_Mote_DeathPuddle_Pi</deathPuddleMoteContainsString>
				
				<!-- <debug>true</debug> -->
			</li>
		</comps>
	</HediffDef>

</Defs>