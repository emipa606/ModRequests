<?xml version="1.0" encoding="utf-8" ?>
<!-- If the Equium mod is active, Adding footprints parameters for slug when they step in the blood filth from this equium -->
<!-- red_fluid should always be there since it's human blood color so no need for conditionnal -->
<!-- Todo : equium stepping in slug filth -->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Equiums</li>
		</mods>
		<match Class="PatchOperationAdd">
			<!-- We dont need to report an error if mod is not loaded -->
			<success>Normal</success>
			<xpath>/Defs/HediffDef[defName="Hediff_LTF_Slug_Stain_Footprint"]/comps/li/footprint/li[defName="red_fluid"]/triggerOnFilthDef</xpath>
			<value>
				<li>FilthBloodEquium</li>
			</value>
		</match>
	</Operation>
</Patch>