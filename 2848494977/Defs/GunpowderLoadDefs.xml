
<Defs>
  
  <CustomLoads.GunpowderEffectsDef>
    <defName>CL_DefaultGunpowderEffects</defName>

    <material>Prometheum</material>
    <costPerBullet>0.1</costPerBullet> <!-- At max (200%) powder load. -->

    <stages>
      <li>
        <powder>-3</powder>
        <effects>
          <desc>Massively reduced powder load greatly lowers muzzle velocity, damage and recoil.</desc>
          <damage>x0.5</damage>
          <speed>x0.5</speed>
          <recoil>x0.3</recoil>
          <spread>x0.5</spread>
        </effects>
      </li>
      <li>
        <powder>-2</powder>
        <effects>
          <desc>Greatly reduced powder load lowers muzzle velocity, damage and recoil.</desc>
          <damage>x0.6</damage>
          <speed>x0.6</speed>
          <recoil>x0.5</recoil>
          <spread>x0.65</spread>
        </effects>
      </li>
      <li>
        <powder>-1</powder>
        <effects>
          <desc>Reduced powder load lowers muzzle velocity, damage and recoil.</desc>
          <damage>x0.75</damage>
          <speed>x0.75</speed>
          <recoil>x0.75</recoil>
          <spread>x0.75</spread>
        </effects>
      </li>
      <li>
        <powder>0</powder> <!-- Default powder load does nothing -->
      </li>
      <li>
        <powder>1</powder>
        <effects>
          <desc>Increased powder load gives slightly higher muzzle velocity, damage and recoil.</desc>
          <damage>x1.15</damage>
          <speed>x1.15</speed>
          <recoil>x1.2</recoil>
          <spread>+0.1</spread>
        </effects>
      </li>
      <li>
        <powder>2</powder>
        <effects>
          <desc>Greatly increased powder load gives higher muzzle velocity, damage and recoil.</desc>
          <damage>x1.3</damage>
          <speed>x1.25</speed>
          <recoil>x1.35</recoil>
          <spread>+0.15</spread>
        </effects>
      </li>
      <li>
        <powder>3</powder>
        <effects>
          <desc>Massively increased powder load gives much higher muzzle velocity, damage and recoil.</desc>
          <damage>x1.4</damage>
          <speed>x1.35</speed>
          <recoil>x1.4</recoil>
          <spread>+0.25</spread>
          <apBlunt>x1.1</apBlunt>
          <rateOfFire>x1.1</rateOfFire>
        </effects>
      </li>
      <li>
        <powder>4</powder>
        <effects>
          <desc>Absurdly increased powder load gives much higher muzzle velocity, damage and recoil.</desc>
          <damage>x1.55</damage>
          <speed>x1.45</speed>
          <recoil>x1.55</recoil>
          <spread>+0.5</spread>
          <apBlunt>x1.2</apBlunt>
          <apSharp>x1.2</apSharp>
          <rateOfFire>x1.2</rateOfFire>
        </effects>
      </li>
    </stages>

  </CustomLoads.GunpowderEffectsDef>

</Defs>