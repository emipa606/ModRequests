<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ItemProcessor.ItemAcceptedDef>
		<defName>JKN_Adobe_ItemAcceptedDef</defName>
		<building>JKN_AdobeBakingFrame</building>
		<slot>1</slot>
		<items>			
		    <li>JKN_AdobeMix</li>					
		</items>							
	</ItemProcessor.ItemAcceptedDef>
	
	<ItemProcessor.CombinationDef>
		<defName>JKN_BakeAdobe</defName>
		<building>JKN_AdobeBakingFrame</building>	
		<items>
			<li>JKN_AdobeMix</li>
		</items>			
		<amount>
			<li>1</li>
		</amount>
		<result>JKN_AdobeBlocks</result>	
		<yield>15</yield>		
		<useQualityIncreasing>false</useQualityIncreasing>
		<singleTimeIfNotQualityIncreasing>3</singleTimeIfNotQualityIncreasing> <!-- 3.0 default, Time needed to process -->
	</ItemProcessor.CombinationDef>	
	

</Defs>