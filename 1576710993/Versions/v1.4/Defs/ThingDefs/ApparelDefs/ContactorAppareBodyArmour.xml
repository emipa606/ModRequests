<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ContractorApparelArmorPowerBase">
    <defName>Apparel_ContractorBodyArmor</defName>
    <label>Contractor Power Armour</label>
    <description>A set of Contractor Power Armour, usually seen used to by mercenaries and rogues out on Rimworlds. its advance to servos and motors allows for extra mobility to the wearer. Comes with toxic resistance lining and temperature regulation systems for extreme environment use. Incredibly resistant to heat.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/ContractorArmour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <MarketValue>2150</MarketValue>
      <WorkToMake>48000</WorkToMake>
      <MaxHitPoints>360</MaxHitPoints>
      <Mass>12</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>1.10</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.90</ArmorRating_Heat>
      <Insulation_Cold>18</Insulation_Cold>
      <Insulation_Heat>18</Insulation_Heat>
      <EquipDelay>10</EquipDelay>
    </statBases>

    <equippedStatOffsets>
	  <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.5</ToxicEnvironmentResistance>
      <MoveSpeed>0.1</MoveSpeed>
    </equippedStatOffsets>

    <costList>
      <ComponentSpacer>5</ComponentSpacer>
      <ComponentIndustrial>2</ComponentIndustrial>
      <Plasteel>120</Plasteel>
      <Steel>40</Steel>
      <Uranium>20</Uranium>
    </costList>
    
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    
    <apparel>
      
        <bodyPartGroups>
          <li>Neck</li>
          <li>Torso</li>
          <li>Shoulders</li>
          <li>Arms</li>
          <li>Legs</li>
        </bodyPartGroups>
      
      <wornGraphicPath>Things/Apparel/ContractorArmour</wornGraphicPath>
      
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>

      <tags>
        <li>SpacerMilitary</li>
      </tags>
       
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    
  </ThingDef>
  

  </Defs>
      
   