<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
    <defName>Contractors</defName>
    <label>Off-world Contractors</label>
    <description>Ex-mercenaries, Ex-pirates and Missguided Wanderers all under the control of a Off-world PMC hungry for loot, hired by other world's to keep "order" on the Rim.\n\nExtremely isolationist and unwilling to trade or with engage in diplomacy with any other faction.\n\nThere technology is highly advance however they do rely on militia of locals bringing whatever equipment they can find as part of their force.</description>
    <pawnSingular>Contractor</pawnSingular>
    <pawnsPlural>Contractors</pawnsPlural>
    <autoFlee>true</autoFlee>
    <settlementGenerationWeight>0.5</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
	  <canMakeRandomly>true</canMakeRandomly>
	  <canSiege>true</canSiege>
	  <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Field CEO</leaderTitle>
    <permanentEnemy>true</permanentEnemy>
	<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <factionIconPath>Things/CAIcon</factionIconPath>
	  
	  <xenotypeSet>
		  <xenotypeChances>
			  <Hussar MayRequire="Ludeon.RimWorld.Biotech">0.05</Hussar>
			  <Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0.05</Dirtmole>
			  <Genie MayRequire="Ludeon.RimWorld.Biotech">0.025</Genie>
			  <Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.025</Neanderthal>
		  </xenotypeChances>
	  </xenotypeSet>
	  
	  <colorSpectrum>
		  <li>(255, 255, 255)</li>
	  </colorSpectrum>

	  <factionNameMaker>NamerCAFaction</factionNameMaker>
	  <settlementNameMaker>NamerCABase</settlementNameMaker>
	  <techLevel>Spacer</techLevel>

	  <backstoryCategories>
		  <li>Outlander</li>
		  <li>Civil</li>
		  <li>Pirate</li>
	  </backstoryCategories>



	  <raidLootValueFromPointsCurve>
      <points>
        <li>(35,     15)</li>
        <li>(100,   120)</li>
        <li>(1000,  500)</li>
        <li>(2000,  800)</li>
        <li>(4000, 1000)</li>
      </points>
    </raidLootValueFromPointsCurve>
    
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    
    <allowedArrivalTemperatureRange>
      <min>-55</min>
      <max>55</max>
    </allowedArrivalTemperatureRange>
    
    <pawnGroupMakers>
      <li>
        <!-- Offence -->
        <kindDef>Combat</kindDef>
        <options>
          <Contractor_Rifleman>10</Contractor_Rifleman>
          <Contractor_Medic>1</Contractor_Medic>
          <Contractor_Marksman>1</Contractor_Marksman>
          <Contractor_Assault>7</Contractor_Assault>
          <Contractor_Officer>3</Contractor_Officer>
          <Contractor_Gunner>5</Contractor_Gunner>
          <Contractor_Explosives>0.5</Contractor_Explosives>
          <Contract_Militia>10</Contract_Militia>
		  <Contractor_CEO>5</Contractor_CEO>
		</options>
      </li>

      <li>
        <!-- Defense -->
        <kindDef>Settlement</kindDef>
        <options>
          <Contractor_Rifleman>10</Contractor_Rifleman>
          <Contractor_Medic>1</Contractor_Medic>
          <Contractor_Marksman>1</Contractor_Marksman>
          <Contractor_Assault>7</Contractor_Assault>
          <Contractor_Officer>3</Contractor_Officer>
          <Contractor_Gunner>5</Contractor_Gunner>
          <Contractor_Explosives>0.5</Contractor_Explosives>
          <Contract_Militia>10</Contract_Militia>
		  <Contractor_CEO>10</Contractor_CEO>
        </options>
      </li>
    </pawnGroupMakers>

    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
</FactionDef>
</Defs>