<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ContractorArmorHelmetMakeableBase">
    <defName>Apparel_ContractorArmorHelmet</defName>
    <label>Contractor Helmet</label>
    <description>A standard Contractor Helmet. it is usually seen used to by mercenaries and rogues out on Rimworlds. it is more advanced than the marine helmet. Comes with an integrated breathing filter and temperature regulation systems for extreme environment use. Incredibly resistant to heat.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/ContractorHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>18750</WorkToMake>
      <MaxHitPoints>170</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>1.06</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.90</ArmorRating_Heat>
      <Insulation_Cold>8</Insulation_Cold>
      <Insulation_Heat>8</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>

    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
   
    <equippedStatOffsets>
    <ToxicSensitivity>-0.5</ToxicSensitivity>
      <MoveSpeed>0.05</MoveSpeed>
    </equippedStatOffsets>

    <costList>
      <ComponentSpacer>1</ComponentSpacer> 
      <ComponentIndustrial>2</ComponentIndustrial>
      <Plasteel>60</Plasteel>
      <Steel>20</Steel>
    </costList>
    
    <apparel>
      
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      
      <wornGraphicPath>Things/Apparel/ContractorHelmet</wornGraphicPath>
      
      <layers>
        <li>Overhead</li>
      </layers>
      
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    
  </ThingDef>

</Defs>
