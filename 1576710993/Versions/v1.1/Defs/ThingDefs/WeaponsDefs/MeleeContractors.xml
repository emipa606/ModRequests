<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>Melee_ContractorsCombatKnife</defName>
    <label>Contractors Combat Knife</label>
    <description>A standard issue contractors combat knife, has a inbuilt plasma blade</description>
    <graphicData>
      <texPath>Things/Weapons/CombatKnife</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <weaponTags>
      <li>ContractorMisc</li>
      <li>ContractorAssault</li>
      <li>ContractorGeneral</li>
    </weaponTags>
    <statBases>
      <MarketValue>550</MarketValue>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.2</Mass>
    </statBases>
    <costList>
      <Steel>5</Steel>
      <Plasteel>5</Plasteel>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <equippedAngleOffset>-90</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <armorPenetration>0.13</armorPenetration>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.5</cooldownTime>
        <armorPenetration>0.55</armorPenetration>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
        <armorPenetration>0.45</armorPenetration>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
</Defs>