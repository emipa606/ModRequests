<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 
  <ThingDef ParentName="ContractorArmorHelmetMakeableBase">
    <defName>Apparel_ContractorArmorHelmet</defName>
    <label>Contractor helmet</label>
    <description>The contractor helmet is usually seen used to by mercenaries pirates and the occasional  professional soldier out on Rimworlds, comes with an integrated breathing filter</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/ContractorHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>22000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>1.02</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.38</ArmorRating_Blunt>
      <ArmorRating_Heat>0.95</ArmorRating_Heat>
      <Insulation_Cold>12</Insulation_Cold>
      <Insulation_Heat>12</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
   
    <equippedStatOffsets>
    <ToxicSensitivity>-0.5</ToxicSensitivity>
    </equippedStatOffsets>

    <costList>
      <ComponentSpacer>1</ComponentSpacer>
      <ComponentIndustrial>2</ComponentIndustrial>
      <Plasteel>60</Plasteel>
      <Steel>20</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/ContractorHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
  </ThingDef>

</Defs>
