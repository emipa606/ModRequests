<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BedWithQualityBase">
    <defName>LMGG_Thing_RepairTripleBed</defName>
    <label>triple repair bed</label>
    <description>A clever combination of an advanced triple bed and a repair shelf, with the best of both worlds. This high-tech unit features a bed that automatically readjusts to perfectly fit the contours of the sleeper, with an integrated white noise generation system. It also has an integrated mechanite injector that automatically signals them to attach to any clothing worn by the sleeper and slowly repairs them. Sleepers also often report feeling refreshed and more alert the morning after.</description>
    <thingClass>Zassi.PolyRepairBed.Things.Bed</thingClass>
    <graphicData>
      <texPath>Things/Furniture/RepairBedTripple/RepairBedTripple</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,2)</drawSize>
    </graphicData>
    <castEdgeShadows>True</castEdgeShadows>
    <statBases>
      <MaxHitPoints>600</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>35000</WorkToBuild>
      <Mass>200</Mass>
      <Beauty>16</Beauty>
      <BedRestEffectiveness>1.25</BedRestEffectiveness>
      <Comfort>1.1</Comfort>
      <ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>1880</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
          <li>Table_RoyalDresser</li>
          <li>Table_RoyalEndTable</li>
          <li>Table_Wardrobe</li>
          <li>Table_IlluminatedEndTable</li>
          <li>Table_IlluminatedDresser</li>
          <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>1</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li>
    </comps>
    <tickerType>Normal</tickerType>
    <size>(3,2)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>240</costStuffCount>
    <costList>
      <Steel>280</Steel>
      <Uranium>14</Uranium>
      <ComponentSpacer>28</ComponentSpacer>
    </costList>
    <building>
      <bed_showSleeperBody>false</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <researchPrerequisites>
      <li>SpacerFurniture</li>
      <li>MechaniteRestoration</li>
    </researchPrerequisites>
    <techLevel>Spacer</techLevel>
    <uiIconScale>1</uiIconScale>
    <designationCategory>AOMorefurniture</designationCategory>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
  </ThingDef>
  
