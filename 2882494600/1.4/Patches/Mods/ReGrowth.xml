<?xml version="1.0" encoding="UTF-8"?>
<Patch>


	<!-- Boreal -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Boreal</li>
		</mods>
		<match Class="PatchOperationSequence">
			
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="RG_Plant_OrangeTreePine" or defName="RG_Plant_BlueTreePine" or defName="RG_Plant_LargeTreePine"]/plant</xpath>
					<value>
						<harvestedThingDef>WoodLog_Pine</harvestedThingDef>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<!-- Swamp -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Swamp</li>
		</mods>
		<match Class="PatchOperationSequence">
			
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="RG_Plant_TreeWhiteWillow"]/plant</xpath>
					<value>
						<harvestedThingDef>WoodLog_Willow</harvestedThingDef>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<!-- Tundra -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Tundra</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "RG_Tree_TundraTreePine"]/plant</xpath>
			<value>
				<harvestedThingDef>WoodLog_Pine</harvestedThingDef>
			</value>
		</match>
	</Operation>

				
	<!-- Temperate Forest: Cocoa substitute was a choice of the former author. I decided to keep it. -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Temperate</li>
		</mods>
		<match Class="PatchOperationSequence">
		
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "RG_Plant_TreeCornish"]/plant</xpath>
				<value>
					<harvestedThingDef>WoodLog_Cocoa</harvestedThingDef>
				</value>
			</li>
		</operations>
		</match>
	</Operation>
	
	<!-- ReGrowth: Aspen by Raygne -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Aspen</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="RG_Plant_TreeAspenRed" or defName="RG_Plant_TreeAspenYellow"]/plant</xpath>
			<value>
				<harvestedThingDef>WoodLog_Birch</harvestedThingDef>
			</value>
			</li>
		</operations>
		</match>
	</Operation>
	

</Patch>
