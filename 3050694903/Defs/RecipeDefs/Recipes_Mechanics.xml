<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- robotic arm-->
    <RecipeDef ParentName="DSU_BaseRecipe_Mechanics">
        <defName>Make_DSU_RoboticArm</defName>
        <label>make robotic arm</label>
        <jobString>Making robotic arm</jobString>
        <workAmount>1000</workAmount>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>20</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>ComponentIndustrial</li>
                <li>Steel</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <DSU_RoboticArm>1</DSU_RoboticArm>
        </products>
        <skillRequirements>
            <Crafting>8</Crafting>
        </skillRequirements>
    </RecipeDef>

