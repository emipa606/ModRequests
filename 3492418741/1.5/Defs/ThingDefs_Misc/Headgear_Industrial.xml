<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="HatMakeableBase">
		<defName>LK_GlassOld</defName>
		<label>Simple Glasses</label>
		<description>An old round-shaped glasses. Nothing special about it.</description>
		<graphicData>
			<texPath>GlassOld</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<generateCommonality>0</generateCommonality>
		<costStuffCount>10</costStuffCount>
		<stuffCategories>
		  <li>Metallic</li>
		  <li>Woody</li>
		</stuffCategories>
		<equippedStatOffsets>
			<ResearchSpeed>0.01</ResearchSpeed>
		</equippedStatOffsets>
		<statBases>
			<Mass>0.01</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>4500</WorkToMake>
			<EquipDelay>0.2</EquipDelay>
			<ArmorRating_Sharp>0.01</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.01</ArmorRating_Blunt>
			<ArmorRating_Heat>0.01</ArmorRating_Heat>
			<Insulation_Cold>0</Insulation_Cold>
			<Insulation_Heat>0</Insulation_Heat>
		</statBases>

		<thingCategories Inherit='False'>
			<li>Headgear</li>
		</thingCategories>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Eyes</li>
			</bodyPartGroups>
			<wornGraphicPath>GlassOld</wornGraphicPath>
			<layers>
				<li>EyeCover</li>
			</layers>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>Machining</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>TableMachining</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>

	<ThingDef ParentName="HatMakeableBase">
		<defName>LK_Aviator</defName>
		<label>Aviator</label>
		<description>An Aviator style sunglasses with tinted lenses.</description>
		<graphicData>
			<texPath>Aviator</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<generateCommonality>0</generateCommonality>
		<costStuffCount>15</costStuffCount>
		<stuffCategories>
		  <li>Metallic</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>5500</WorkToMake>
			<EquipDelay>0.2</EquipDelay>
			<Mass>0.01</Mass>
			<ArmorRating_Sharp>0.02</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.02</ArmorRating_Blunt>
			<ArmorRating_Heat>0.02</ArmorRating_Heat>
			<Insulation_Cold>0</Insulation_Cold>
			<Insulation_Heat>0</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
		  <SocialImpact>0.05</SocialImpact>
		  <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.05</SlaveSuppressionOffset>
		</equippedStatOffsets>

		<thingCategories Inherit='False'>
			<li>Headgear</li>
		</thingCategories>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Eyes</li>
			</bodyPartGroups>
			<wornGraphicPath>Aviator</wornGraphicPath>
			<layers>
				<li>EyeCover</li>
			</layers>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>Machining</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>TableMachining</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>
</Defs>