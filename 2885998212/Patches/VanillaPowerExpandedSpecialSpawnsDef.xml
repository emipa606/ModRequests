<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Power</li>
		</mods>
		<match Class="PatchOperationSequence">
		  <success>Always</success>
		  <operations>
			<li Class="PatchOperationAdd">
			  <xpath>/Defs/VanillaPowerExpanded.SpecialPowerSpawnsDef[defName="VPE_SpawnHelixienVents"]/terrainValidationDisallowed</xpath>
				<value>
					<li>KB_PocketDimensionFloorWood</li>
					<li>KB_PocketDimensionFloorStone</li>
					<li>KB_PocketDimensionFloorMetal</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
			  <xpath>/Defs/VanillaPowerExpanded.SpecialPowerSpawnsDef[defName="VPE_SpawnChemfuelPonds"]/terrainValidationDisallowed</xpath>
				<value>
					<li>KB_PocketDimensionFloorWood</li>
					<li>KB_PocketDimensionFloorStone</li>
					<li>KB_PocketDimensionFloorMetal</li>
				</value>
			</li>
		  </operations>
		</match>
	</Operation>

</Patch>

