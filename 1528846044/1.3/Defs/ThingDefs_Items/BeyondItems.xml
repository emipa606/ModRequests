<ThingDef ParentName="ResourceBase">
<defName>TimeElement</defName>
    <label>time fragment</label>
	<thingClass>ThingWithComps</thingClass>
    <description>This unknown material seems to vibrate with its own energy. Glitterworld studies can only bring about that this item is made directly from quantum fluctuations. How this is done is unknown.</description>
    <graphicData>
      <texPath>Things/Item/Resource/TimeFragment</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Silver_Drop</soundInteract>
    <soundDrop>Silver_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <MarketValue>20</MarketValue>
      <Mass>0.033</Mass>
      <SharpDamageMultiplier>6</SharpDamageMultiplier>
      <BluntDamageMultiplier>1</BluntDamageMultiplier>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stackLimit>500</stackLimit>
	<drawGUIOverlay>true</drawGUIOverlay>
    <smallVolume>true</smallVolume>
	<tickerType>Rare</tickerType>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <color>(0,255,101)</color>
      <commonality>0.001</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statOffsets>
        <Beauty>60</Beauty>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>2</MaxHitPoints>
        <Flammability>1</Flammability>
        <Beauty>20</Beauty>
        <MeleeWeapon_CooldownMultiplier>9</MeleeWeapon_CooldownMultiplier>
      </statFactors>
     
    </stuffProps>
	<comps>
	<li Class="CompProperties_Rottable">
        <daysToRotStart>80</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
	  </comps>
  </ThingDef>
  
