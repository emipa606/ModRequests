<?xml version="1.0" encoding="utf-8" ?>
<Defs>

__________________________________________________________________________________
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_BeyondChargeRifle</defName>
    <label>advanced charge rifle</label>
    <description>An advanced charged-shot assault rifle. Using quantum matter, this weapon is the ultimate in accuracy and fire-rate</description>
    <techLevel>Archotech</techLevel>
    <graphicData>
      <texPath>Things/Item/Weapon/BeyondChargeRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>4.6</Mass>
      <AccuracyTouch>0.25</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.9</AccuracyMedium>
      <AccuracyLong>0.9</AccuracyLong>
      <RangedWeapon_Cooldown>1.30</RangedWeapon_Cooldown>
    </statBases>
	<tradeability>None</tradeability>
    <recipeMaker>
      <researchPrerequisite>WAChargeRifles</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>BeyondMachining</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Plasteel>100</Plasteel>
      <ComponentSpacer>3</ComponentSpacer>
	  <TimeElement>1</TimeElement>
    </costList>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ChargeRifle</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <minRange>0.5</minRange>
        <range>33.0</range>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <burstShotCount>7</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
__________________________________________________________________________________


</Defs>