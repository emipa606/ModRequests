<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_BeyondPowerArmor</defName>
    <label>beyond power armor</label>
    <description>A suit of powered armor that . Some Corvette class ships have the same material coating their hulls because of how strong the material is.\nThe suit has been known to almost only fall to focus fire.</description>
    <techLevel>Archotech</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>WAArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>BeyondMachining</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Item/Armor/BeyondPowerArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>0.5</generateCommonality>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <MaxHitPoints>557</MaxHitPoints>
      <Mass>22</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>1.1</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.1</ArmorRating_Blunt>
      <ArmorRating_Heat>500</ArmorRating_Heat>
      <Insulation_Cold>500</Insulation_Cold>
      <Insulation_Heat>400</Insulation_Heat>
      <EquipDelay>30</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>2</MoveSpeed>
    </equippedStatOffsets>
	<tradeability>None</tradeability>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <Plasteel>100</Plasteel>
      <TimeElement>2</TimeElement>
    </costList>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
        <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/Armor/BPA_Multi/BeyondPowerArmor</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
