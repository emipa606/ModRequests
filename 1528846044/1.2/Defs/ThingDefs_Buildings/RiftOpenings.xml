<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <ThingDef ParentName="BuildingNaturalBase">
    <defName>RiftGeyser</defName>
    <label>rift opening</label>
    <description>A quantum fluctuation has caused this spot to be opened to supernatural energies. Perhaps we should leave it alone.</description>
    <thingClass>Building_SteamGeyser</thingClass>
    <graphicData>
      <texPath>Things/Building/RiftGeyser</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <altitudeLayer>Floor</altitudeLayer>
		<rotatable>false</rotatable>
    <destroyable>false</destroyable>
    <useHitPoints>false</useHitPoints>
    <tickerType>Normal</tickerType>
    <selectable>false</selectable>
    <size>(2,2)</size>
    <neverOverlapFloors>true</neverOverlapFloors>
    <blockPlants>true</blockPlants>
    <building>
      <isEdifice>false</isEdifice>
      <claimable>false</claimable>
      <deconstructible>false</deconstructible>
    </building>
	<comps>
	<li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(81,156,255,0)</glowColor>
      </li>
	  </comps>
  </ThingDef>
  
 </Defs>