 <RecipeDef>
    <defName>CreateCrystal</defName>
    <label>replicate crystal shards</label>
    <description>Take time elements and upgrade them into one of the most powerful items in the universe.</description>
    <jobString>Create shards of the Crystal</jobString>
    <workAmount>40</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>TimeElement</li>
          </thingDefs>
        </filter>
        <count>0.3</count>
      </li>
    </ingredients>
    <!-- Switched to standard products so we can do "do until you have X"
    <specialProducts>
      <li>Smelted</li>
    </specialProducts>-->
    <products>
      <CrystalShard>1</CrystalShard>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>TimeElement</li>
      </thingDefs>
    </fixedIngredientFilter>
	<researchPrerequisite>CrystalProduction</researchPrerequisite>
  </RecipeDef>
