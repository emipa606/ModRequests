<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<RecipeDef>
		<defName>SNS_Production_Unobtainium</defName>
		<label>make Starsteel</label>
		<description>Create a binding agent for Cosmic Matter, to be filled to produce Starsteel.</description>
		<ingredients>
			<li><filter><thingDefs><li>Gold</li></thingDefs></filter><count>7</count></li>
			<li><filter><thingDefs><li>Plasteel</li></thingDefs></filter><count>25</count></li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Gold</li>
				<li>Plasteel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workAmount>1500</workAmount>
		<soundWorking>Recipe_Machining</soundWorking>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<skillRequirements><Crafting>12</Crafting></skillRequirements>
		<jobString>Forging Starsteel</jobString>
		<recipeUsers><li>Table_SNS_Unobtainer</li></recipeUsers>
		<products><SNS_Unobtainium>30</SNS_Unobtainium></products>
		<researchPrerequisite>SNS_Research_I</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>SNS_Production_Unobtainium_Fiber</defName>
		<label>make Starsteel 'Wool'</label>
