        <severityPerDay>-0.09</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
        <li>
            <makeImmuneTo>
            <li>GutWorms</li>
            <li>MuscleParasites</li>
            <li>FibrousMechanites</li>
            <li>SensoryMechanites</li>
            <li>WoundInfection</li>
            <li>Flu</li>
            <li>Animal_Flu</li>
            <li>Plague</li>
            <li>Animal_Plague</li>
            <li>Malaria</li>
            <li>SleepingSickness</li>
            <li>CryptosleepSickness</li>
            <li>FoodPoisoning</li>
            <li>ToxicBuildup</li>
            <li>HeartAttack</li>
            <li>DrugOverdose</li>
            <li>BadBack</li>
            <li>Frail</li>
            <li>Cataract</li>
            <li>Blindness</li>
            <li>HearingLoss</li>
            <li>Dementia</li>
            <li>Alzheimers</li>
