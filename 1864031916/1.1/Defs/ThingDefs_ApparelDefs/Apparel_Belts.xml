<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Holsters -->

  <ThingDef ParentName="RHApparelMakeableBase">
    <defName>RNApparel_Holsters_ShoulderBrown</defName>
    <label>handgun holsters (brown)</label>
    <description>A handgun holster is a device used to hold or restrict the undesired movement of a handgun, most commonly in a location where it can be easily withdrawn for immediate use. 
	
Holsters are often attached to a belt or waistband, but they may be attached to other locations of the body (e.g., the ankle holster). Holsters vary in the degree to which they secure or protect the firearm.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>8</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <graphicData>
      <texPath>Things/Apparel/Display/Armor/Brown_ShoulderHolster</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
	  <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.5</Mass>
	  <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	
	<equippedStatOffsets>
	  <AimingDelayFactor>-0.10</AimingDelayFactor>
	  <PainShockThreshold>0.05</PainShockThreshold>
	  <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
	</equippedStatOffsets>
	
    <thingCategories>
      <li>RHApparel_Belts</li>
    </thingCategories>
		<!--<generateAllowChance>0.15</generateAllowChance>-->
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
	  <wornGraphicPath>Things/Apparel/Belt/Brown_ShoulderHolster</wornGraphicPath>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
		<li>RH_Holsters</li>
	    <li>PassiveCamo_Brown_Set</li>
      </tags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
  </ThingDef>

</Defs>
