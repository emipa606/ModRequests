<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
      <!-- ======================================= AR500 Civilian =======================================-->
  
  <ThingDef ParentName="RHArmorMachineableBase_RHFactions">
    <defName>RNApparel_BallisticVest_Black</defName>
    <label>ballistic vest</label>
    <description>A ballistic vest or bullet-resistant vest, often called a bulletproof vest, is an item of personal armor that helps absorb the impact and reduce or stop penetration to the body from firearm-fired projectiles and shrapnel from explosions, and is worn on the torso.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Display/TacticalVest_Black</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>220</MaxHitPoints>
      <Mass>3.5</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.01</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.37</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.08</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>RHApparel_BodyArmor</li>
    </thingCategories>
    <costList>
      <Cloth>32</Cloth>
      <Steel>72</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <apparel>
	<careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Armor/TacticalVest_Black</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <!--<li>IndustrialMilitaryBasic</li>-->
		<li>RH_Armor_BallisticVest</li>
		<li>PassiveCamo_Black_Set</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>
