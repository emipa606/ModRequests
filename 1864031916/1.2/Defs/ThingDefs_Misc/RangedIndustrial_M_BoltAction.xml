<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================================= Bolt Actions ==================================== -->
  
      <!-- ================================= AW50 AMR ==================================== -->

  <ThingDef ParentName="RNBaseAMR">
    <defName>RNGun_AW50Sn</defName>
    <label>AW50</label>
    <description>The AW50 was introduced in 2000 by the British and Australian armed forces and is an AW rifle re-engineered and chambered for .50 BMG (12.7×99mm NATO).

The German Army adopted the AW50 and designated it as the G24 (Gewehr 24 or Scharfschützengewehr 24).</description>
    <graphicData>
      <texPath>Things/Item/Equipment/M_Bolt_Action/AW50</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
	<equippedAngleOffset>40</equippedAngleOffset>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.46</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.92</AccuracyMedium>
      <AccuracyLong>0.94</AccuracyLong>
      <RangedWeapon_Cooldown>3.50</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>65</Steel>
      <ComponentIndustrial>9</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RNBullet_50BMG_Sniper</defaultProjectile>
        <warmupTime>4.0</warmupTime>
        <range>49.9</range>
        <soundCast>RNShot_AWP</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags Inherit="False">
      <!--<li>SniperRifle</li>-->
	  <li>RN_AW50</li>
    </weaponTags>
  </ThingDef>
  
