<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="BuildingBase">
    <defName>GloomyDeco_Box</defName>
    <label>simple box</label>
    <description>A container that is not only good for storing items, but also stopping bullets in an emergency.</description>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <graphicData>
      <texPath>GloomyDeco/Box</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.6,1.6)</drawSize>
      <damageData>
        <rect>(0.1,0.1,0.8,0.8)</rect>
      </damageData>
      <shadowData>
        <volume>(0.4,0.4,0.4)</volume>
        <offset>(0,0,0.0)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>20</pathCost>
    <canOverlapZones>true</canOverlapZones>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>400</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Mass>2</Mass>
	  <Beauty>5</Beauty>
    </statBases>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
    <costList>
      <Steel>5</Steel>
    </costList>
    <defaultPlacingRot>South</defaultPlacingRot>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>OldStyleDeco</designationCategory>
	<!-- custom -->
    <resourcesFractionWhenDeconstructed>0.2</resourcesFractionWhenDeconstructed>
    <fillPercent>0.4</fillPercent>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
	<thingClass>Building_Storage</thingClass>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Normal</priority>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
</ThingDef>
</Defs>