<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="BuildingBase">
    <defName>GloomyDeco_Bucket</defName>
    <label>simple bucket</label>
    <description>A simple but efficient bucket. It can be used to transport water or store grains.</description>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <graphicData>
      <texPath>GloomyDeco/Bucket</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.4,0.4)</rect>
      </damageData>
      <shadowData>
        <volume>(0.2,0.2,0.2)</volume>
        <offset>(0,0,0.0)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>20</pathCost>
    <canOverlapZones>true</canOverlapZones>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>400</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Mass>2</Mass>
	  <Beauty>5</Beauty>
    </statBases>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
    <costList>
      <Steel>5</Steel>
    </costList>
    <defaultPlacingRot>South</defaultPlacingRot>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>OldStyleDeco</designationCategory>
	<!-- custom -->
    <resourcesFractionWhenDeconstructed>0.2</resourcesFractionWhenDeconstructed>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
</ThingDef>
</Defs>