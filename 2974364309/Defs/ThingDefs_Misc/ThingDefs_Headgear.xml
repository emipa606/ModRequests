<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--__________ Headgear __________-->



	<!--__________ Holstein Order __________-->

 	<!-- Helmet --> 
  
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Holstein_Helmet</defName>
    <label>Holstein Helmet</label>
    <description>Helmet worn by the knights of the Holstein Order.</description>
	<techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Apparel/Headgear/HolsteinHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <drawSize>1.6</drawSize>		  
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>0.5</Mass>
            <StuffEffectMultiplierArmor>0.70</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>0.70</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <recipeMaker>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>FullHead</li>	
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Headgear/HolsteinHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>HolsteinUniform</li>
        <li>Holstein</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Holstein_Light_Helmet</defName>
