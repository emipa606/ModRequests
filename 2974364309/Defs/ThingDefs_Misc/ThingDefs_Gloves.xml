    <!-- +++++ Accessory +++++ -->
	
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>Holstein_chausses</defName>
		<label>Holstein Chainmail Chausses</label>
		<description>...</description>
		<graphicData>
			<texPath>Things/Apparel/Accessory/Chausses</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
      <costStuffCount>40</costStuffCount>
      <stuffCategories>
        <li>Metallic</li>
      </stuffCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.2</Mass>
      <StuffEffectMultiplierArmor>0.70</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>0.70</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
			<DeteriorationRate>1</DeteriorationRate>
		</statBases>
		<thingCategories Inherit="False">
            <li>Apparel</li>
        </thingCategories>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Legs</li>
				<li>Feet</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Neolithic</li>
			</tags>
			<defaultOutfitTags>
				<li>Anything</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
    </ThingDef>
	
