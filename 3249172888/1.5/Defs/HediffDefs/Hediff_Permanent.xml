<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <HediffDef>
		<defName>VPEAC_PsyBlocked</defName>
		<label>psyblocked</label>
		<description>A self-containing psychic loop preventing its host from interacting with psy-field.</description>
		<stages>
			<li>
				<statFactors>
					<PsychicSensitivity>0</PsychicSensitivity>
				</statFactors>
			</li>
		</stages>
		<hediffClass>HediffWithComps</hediffClass>
	</HediffDef>
	
	<HediffDef>
		<defName>VPEAC_PsyEnhanced</defName>
		<label>psyenhanced</label>
		<description>A self-containing psychic loop increasing its host's psychic sensitivity.</description>
		<stages>
			<li>
				<statOffsets>
					<PsychicSensitivity>0.2</PsychicSensitivity>
				</statOffsets>
				<statFactors>
					<PsychicSensitivity>1.2</PsychicSensitivity>
				</statFactors>
			</li>
		</stages>
	</HediffDef>
</Defs>