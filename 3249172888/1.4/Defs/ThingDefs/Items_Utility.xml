<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>Apparel_PermitLance</defName>
    <label>permit silence lance</label>
    <description>A psychic effector that can send a psychic pulse tuned to erase all information about target's permits. This effectively resets it, however if some permits are on cooldown, empire will realize they have been tricked and the relationship would be damaged. As a lot of energy is used to create the pulse, internal mechanisms need several hours to return to working condition.</description>
    <graphicData>
      <texPath>Things/Item/Artifact/PsychicShockLance</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Archotech</techLevel>
    <tradeTags>
      <li>Artifact</li>
    </tradeTags>
    <statBases>
      <Mass>0.5</Mass>
      <EquipDelay>2</EquipDelay>
      <MarketValue>1200</MarketValue>
      <MaxHitPoints>8000</MaxHitPoints>
    </statBases>
    <tickerType>Normal</tickerType>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <scoreOffset>4</scoreOffset>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <ignoredByNonViolent>true</ignoredByNonViolent>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
    </apparel>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <verbs>
      <li>
        <verbClass>VPEAC_Verb_CastTargetEffectLances_TargetValidator</verbClass>
        <label>permit silence lance</label>
        <hasStandardCommand>true</hasStandardCommand>
        <targetable>true</targetable>
        <onlyManualCast>false</onlyManualCast>
        <range>4</range>
        <warmupTime>30</warmupTime>
        <targetParams>
          <canTargetBuildings>false</canTargetBuildings>
          <onlyTargetColonists>true</onlyTargetColonists>
        </targetParams>
        <soundCast>PsychicShockLanceCast</soundCast>
      </li>
    </verbs>
	<comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>1</maxCharges>
		<baseReloadTicks>20000</baseReloadTicks>
		<ammoCountPerCharge>1</ammoCountPerCharge>
		<replenishAfterCooldown>true</replenishAfterCooldown>
        <destroyOnEmpty>false</destroyOnEmpty>
        <hotKey>Misc4</hotKey>
        <chargeNoun>charge</chargeNoun>
        <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
      </li>
      <li>
        <compClass>VPEAC_CompTargetEffect_PermitReset</compClass>
      </li>
      <li Class="CompProperties_Styleable"></li>
    </comps>
    <allowedArchonexusCount>1</allowedArchonexusCount>
	<recipeMaker>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <VPEAC_solidPsyfocus>120</VPEAC_solidPsyfocus>
    </costList>
  </ThingDef>

</Defs>