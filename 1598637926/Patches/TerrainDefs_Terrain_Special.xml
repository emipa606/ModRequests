<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/TerrainDef[defName="Bridge"]/label/text()</xpath>
		<value>wooden bridge</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/TerrainDef[defName="Bridge"]/affordances</xpath>
		<value>
			<li>LightAll</li>
			<li>MediumAll</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/TerrainDef[defName="Bridge"]</xpath>
		<value>
			<placeWorkers>
				<li>Terra.PlaceWorker_Bridge</li>
			</placeWorkers>
		</value>
	</Operation>

</Patch>
