<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="FueledStove" or defName="ElectricStove"]/recipes/li[text()[contains(.,'CookMealLavish')]]</xpath>
		<value>
			<li>CookMealLavish</li>
			<li>CookMealExceptional</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="HydroponicsBasin"]/graphicData/drawSize/text()</xpath>
		<value>(1.5,4.5)</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="HydroponicsBasin"]/altitudeLayer/text()</xpath>
		<value>LowPlant</value>
	</Operation>

</Patch>
