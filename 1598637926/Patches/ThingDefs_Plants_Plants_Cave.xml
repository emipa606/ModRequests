	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Glowstool"]/statBases</xpath>
		<key>Flammability</key>
		<value>0.5</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Glowstool"]/statBases</xpath>
		<key>Nutrition</key>
		<value>0.25</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Glowstool"]/plant</xpath>
		<key>harvestWork</key>
		<value>200</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Glowstool"]/plant</xpath>
		<key>harvestYield</key>
		<value>20</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Glowstool"]/plant</xpath>
		<key>harvestMinGrowth</key>
		<value>0.65</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Glowstool"]/plant</xpath>
		<key>growDays</key>
		<value>35</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Glowstool"]/plant</xpath>
		<key>fertilityMin</key>
		<value>0.15</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Glowstool"]/plant</xpath>
		<key>fertilitySensitivity</key>
		<value>0.15</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/ThingDef[defName="Glowstool"]</xpath>
		<value>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Small</plantSize>
				<fertilityConsumptionPerDay>0.006</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.04</moistureConsumptionPerDay>
				<minMoisture>0.4</minMoisture>
				<minOptimalMoisture>0.45</minOptimalMoisture>
				<maxMoisture>0.8</maxMoisture>
				<minAliveTemperature>3</minAliveTemperature>
				<minLeafTemperature>3</minLeafTemperature>
				<minGrowthTemperature>4</minGrowthTemperature>
				<minGoodGrowthTemperature>15</minGoodGrowthTemperature>
				<minSunscaldTemperature>48</minSunscaldTemperature>
				<maxTemperature>48</maxTemperature>
				<ripeTemperatureThreshold>15</ripeTemperatureThreshold>
				<temperatureSensitivity>0.15</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>1</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0</manureFertilityFactor>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.65</max>
					</li>
					<li>
						<state>Ripe</state>
						<max>1</max>
					</li>
				</growthSteps>
			</li>
		</value>
	</Operation>

