<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Rose -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]</xpath>
		<value>
			<thingClass>Terra.PlantPlus</thingClass>
		</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/graphicData</xpath>
		<key>texPath</key>
		<value>Things/Plant/Rose/Rose_Blossom</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]</xpath>
		<key>altitudeLayer</key>
		<value>BuildingOnTop</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/statBases</xpath>
		<key>MaxHitPoints</key>
		<value>100</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/statBases</xpath>
		<key>Flammability</key>
		<value>0.8</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/statBases</xpath>
		<key>Beauty</key>
		<value>7</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/statBases</xpath>
		<key>Nutrition</key>
		<value>0.2</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/plant</xpath>
		<key>sowMinSkill</key>
		<value>3</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/plant</xpath>
		<key>sowWork</key>
		<value>110</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/plant</xpath>
		<key>harvestWork</key>
		<value>200</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/plant</xpath>
		<key>growDays</key>
		<value>12</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/plant</xpath>
		<key>fertilityMin</key>
		<value>0.7</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/plant</xpath>
		<key>fertilitySensitivity</key>
		<value>1</value>
	</Operation>
	<Operation Class="Terra.PatchOperationAddOrReplace">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/plant</xpath>
		<key>leaflessGraphicPath</key>
		<value>Things/Plant/Rose/Rose_Leafless</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]/plant/sowTags</xpath>
		<value>
			<li>RaisedBed</li>
			<li>DecorativeTree</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/ThingDef[defName="Plant_Rose"]</xpath>
		<value>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Medium</plantSize>
				<plantWasteYield>4</plantWasteYield>
				<fertilityConsumptionPerDay>0.0065</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.055</moistureConsumptionPerDay>
				<minMoisture>0.35</minMoisture>
				<minOptimalMoisture>0.45</minOptimalMoisture>
				<maxMoisture>0.85</maxMoisture>
				<minAliveTemperature>-15</minAliveTemperature>
				<minLeafTemperature>-2</minLeafTemperature>
				<minGrowthTemperature>8</minGrowthTemperature>
				<minGoodGrowthTemperature>16</minGoodGrowthTemperature>
				<minSunscaldTemperature>43</minSunscaldTemperature>
				<maxTemperature>49</maxTemperature>
				<temperatureSensitivity>0.1</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>1</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0.5</manureFertilityFactor>
				<weedsMinGrassToAffectGrowth>0.5</weedsMinGrassToAffectGrowth>
				<weedsMaxGrassBeforeDamage>1.6</weedsMaxGrassBeforeDamage>
				<beeCanVisit>true</beeCanVisit>
				<beeVisitBlossomGrowthOffset>0</beeVisitBlossomGrowthOffset>
				<beeVisitingPeriodTicks>45000</beeVisitingPeriodTicks>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.4</max>
						<stepGraphicPath>Things/Plant/Rose/Rose_Young</stepGraphicPath>
					</li>
					<li>
						<state>Blossom</state>
						<max>1</max>
						<stepGraphicPath>Things/Plant/Rose/Rose_Blossom</stepGraphicPath>
						<beautyOffset>12</beautyOffset>
					</li>
				</growthSteps>
			</li>
		</value>
	</Operation>

