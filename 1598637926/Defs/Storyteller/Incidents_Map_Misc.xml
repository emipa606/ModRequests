<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--========================== Bad ===============================-->

	<IncidentDef>
		<defName>HeavyStorm</defName>
		<label>heavy storm</label>
		<category>Misc</category>
		<targetTags>
			<li>Map_PlayerHome</li>
		</targetTags>
		<workerClass>IncidentWorker_MakeGameCondition</workerClass>
		<gameCondition>HeavyStorm</gameCondition>
		<letterLabel>Heavy storm</letterLabel>
		<letterText>An extreme storm is heading towards this area. This will cause storm surges and floods in coastal areas. Stay on higher elevation to be safe.\n\nColonists are afraid of such natural forces and will become unhappy when you force them to be outside.</letterText>
		<letterDef>ThreatSmall</letterDef>
		<baseChance>2</baseChance>
		<minRefireDays>5</minRefireDays>
		<minDifficulty>2</minDifficulty>
		<durationDays>
			<min>0.25</min>
			<max>1.5</max>
		</durationDays>
		<modExtensions>
			<li Class="Terra.ModExt_Incident">
				<disallowedBiomes>
					<li>CaveOasis</li>
					<li>TunnelworldCave</li>
					<li>CoralReef</li>
					<li>KelpForest</li>
					<li>OceanBank</li>
					<li>ArcticSeafloor</li>
					<li>AbyssalTrench</li>
				</disallowedBiomes>
			</li>
		</modExtensions>
	</IncidentDef>

	<IncidentDef>
		<defName>Drought</defName>
		<label>drought</label>
		<category>Misc</category>
		<targetTags>
			<li>Map_PlayerHome</li>
		</targetTags>
		<workerClass>Terra.IncidentWorker_Drought</workerClass>
		<gameCondition>Drought</gameCondition>
		<letterLabel>Drought</letterLabel>
		<letterText>An unusual drought has begun.\n\nRain will be absent and the sun burns the area. Keep your colonists save fron the heat and try to harvest your crops before they dry out or build good irrigation systems.</letterText>
		<letterDef>ThreatSmall</letterDef>
		<baseChance>1.5</baseChance>
		<minRefireDays>40</minRefireDays>
		<durationDays>
			<min>4.5</min>
			<max>11.0</max>
		</durationDays>
		<modExtensions>
			<li Class="Terra.ModExt_Incident">
				<disallowedBiomes>
					<li>CaveOasis</li>
					<li>TunnelworldCave</li>
					<li>CoralReef</li>
					<li>KelpForest</li>
					<li>OceanBank</li>
					<li>ArcticSeafloor</li>
					<li>AbyssalTrench</li>
				</disallowedBiomes>
			</li>
		</modExtensions>
	</IncidentDef>

	<IncidentDef>
		<defName>Monsoon</defName>
		<label>monsoon</label>
		<category>Misc</category>
		<targetTags>
			<li>Map_PlayerHome</li>
		</targetTags>
		<workerClass>Terra.IncidentWorker_Monsoon</workerClass>
		<gameCondition>Monsoon</gameCondition>
		<letterLabel>Monsoon</letterLabel>
		<letterText>An unusual monsoon has begun.\n\nThe heavy rain can soak terrain and flood valleys. Be sure to build dams if needed to protect your base from the floods and try to harvest crops before they flood and die.</letterText>
		<letterDef>ThreatSmall</letterDef>
		<baseChance>1.5</baseChance>
		<minRefireDays>40</minRefireDays>
		<durationDays>
			<min>3.0</min>
			<max>8.5</max>
		</durationDays>
		<modExtensions>
			<li Class="Terra.ModExt_Incident">
				<disallowedBiomes>
					<li>CaveOasis</li>
					<li>TunnelworldCave</li>
					<li>AridShrubland</li>
					<li>Desert</li>
					<li>ExtremeDesert</li>
					<li>DesertDunes</li>
					<li>CoralReef</li>
					<li>KelpForest</li>
					<li>OceanBank</li>
					<li>ArcticSeafloor</li>
					<li>AbyssalTrench</li>
				</disallowedBiomes>
			</li>
		</modExtensions>
	</IncidentDef>

</Defs>