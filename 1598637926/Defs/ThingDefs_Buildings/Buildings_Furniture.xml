<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>TreePot</defName>
		<label>tree pot</label>
		<description>Plant decorative trees here to improve the mood of people nearby.</description>
		<thingClass>Building_PlantGrower</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/TreePot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.2,1.2)</drawSize>
			<shadowData>
				<volume>(0.6,0.4,0.35)</volume>
				<offset>(0,0,-0.28)</offset>
			</shadowData>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.20</fillPercent>
		<passability>PassThroughOnly</passability>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToBuild>450</WorkToBuild>
			<Mass>4</Mass>
			<Flammability>1.0</Flammability>
		</statBases>
		<fertility>1.0</fertility>
		<costStuffCount>35</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
			<li>Stony</li>
		</stuffCategories>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<building>
			<defaultPlantToGrow>Plant_DecorativeTree</defaultPlantToGrow>
			<sowTag>DecorativeTree</sowTag>
		</building>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<modExtensions>
			<li Class="Terra.ModExt_Building_PlantGrower">
				<plantPositionFixing>Bottom</plantPositionFixing>
				<plantPositionZOffset>0.5</plantPositionZOffset>
			</li>
		</modExtensions>
	</ThingDef>

