<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--========================= Doors =============================-->

	<ThingDef ParentName="DoorBase">
		<defName>PressureDoor</defName>
		<label>pressure door</label>
		<description>Divides rooms. This door can be used to build airlocks in an underwater base. Place 2 doors with a little space between them to build an airlock or use single ones as safety barriers in a large base. Must be manually opened, which slows people down by a lot. The amount of slowdown depends on what the door is made of.</description>
		<thingClass>Terra.Building_Door_PressureDoor</thingClass>
		<graphicData>
			<texPath>Things/Building/Door/PressureDoor_Mover</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<damageData>
				<!-- No damage marks because they don't move with the door -->
				<!--<rect>(0,0.12,1,0.76)</rect>-->
				<enabled>false</enabled>
			</damageData>
		</graphicData>
		<uiIconPath>Things/Building/Door/PressureDoor_MenuIcon</uiIconPath>
		<statBases>
			<WorkToBuild>1300</WorkToBuild>
			<DoorOpenSpeed>0.3</DoorOpenSpeed>
		</statBases>
		<costList>
			<Steel>50</Steel>
		</costList>
		<costStuffCount>25</costStuffCount>
		<terrainAffordanceNeeded>MediumAll</terrainAffordanceNeeded>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
		
		<designationCategory></designationCategory> <!-- //WIP -->
	</ThingDef>

</Defs>
