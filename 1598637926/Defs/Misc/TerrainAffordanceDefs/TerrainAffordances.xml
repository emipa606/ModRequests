<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Supports light structures and can also be build underwater -->
	<TerrainAffordanceDef>
		<defName>LightAll</defName>
		<label>light (waterproof)</label>
		<order>1250</order>
	</TerrainAffordanceDef>

	<!-- Supports medium structures (mainly walls) and can also be build underwater -->
	<TerrainAffordanceDef>
		<defName>MediumAll</defName>
		<label>medium (waterproof)</label>
		<order>1350</order>
	</TerrainAffordanceDef>

	<!-- Supports heavy structures and can also be build underwater -->
	<TerrainAffordanceDef>
		<defName>HeavyAll</defName>
		<label>heavy (waterproof)</label>
		<order>1450</order>
	</TerrainAffordanceDef>

	<!-- Supports heavy structures and can only be build underwater -->
	<TerrainAffordanceDef>
		<defName>HeavySeafloor</defName>
		<label>heavy (seafloor)</label>
		<order>1460</order>
	</TerrainAffordanceDef>

	<!-- Can be built on with things that are completely waterproof -->
	<TerrainAffordanceDef>
		<defName>Water</defName>
		<label>water</label>
		<order>2100</order>
	</TerrainAffordanceDef>

</Defs>
