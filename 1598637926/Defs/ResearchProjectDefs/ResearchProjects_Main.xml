<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ResearchProjectDef>
		<defName>StoneBridges</defName>
		<label>stone bridges</label>
		<description>Build stone bridges to provide passage over water and even construct heavy structures on them.</description>
		<baseCost>600</baseCost>
		<techLevel>Medieval</techLevel>
		<prerequisites>
			<li>Stonecutting</li>
		</prerequisites>
		<researchViewX>1</researchViewX>
		<researchViewY>5</researchViewY>
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>HeavyBridges</defName>
		<label>heavy bridges</label>
		<description>Build heavy bridges, fast-to-build metal bridges that can be built relatively high and can support heavy structures.</description>
		<baseCost>1000</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>StoneBridges</li>
			<li>Smithing</li>
		</prerequisites>
		<researchViewX>3</researchViewX>
		<researchViewY>5</researchViewY>
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>DeepWaterBridges</defName>
		<label>deep water bridges</label>
		<description>Learn how to build large pillar structures for your bridges to be able to build bridges even in deep water.</description>
		<baseCost>1200</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>HeavyBridges</li>
		</prerequisites>
		<researchViewX>4</researchViewX>
		<researchViewY>5</researchViewY>
	</ResearchProjectDef>

