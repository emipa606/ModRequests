<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="CultivatedPlantBase">
		<defName>Plant_Lupin</defName>
		<label>lupin plant</label>
		<description>Lupins are a common cultivated decorative plant. They can also be used as a green manure because of its nutrient enriching properties.</description>
		<graphicData>
			<texPath>Things/Plant/Lupin/Lupin_Blossom</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<pathCost>15</pathCost>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Flammability>0.8</Flammability>
			<Beauty>6</Beauty>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<plant>
			<growMinGlow>0.3</growMinGlow>
			<lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<growDays>6.8</growDays>
			<harvestWork>160</harvestWork>
			<sowWork>90</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>RaisedBed</li>
				<li>Decorative</li>
				<li>DecorativeTree</li>
			</sowTags>
			<harvestTag>None</harvestTag>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
		<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Medium</plantSize>
				<plantWasteYield>10</plantWasteYield>
				<fertilityConsumptionPerDay>0.008</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.05</moistureConsumptionPerDay>
				<minMoisture>0.35</minMoisture>
				<minOptimalMoisture>0.45</minOptimalMoisture>
				<maxMoisture>0.9</maxMoisture>
				<minAliveTemperature>-3</minAliveTemperature>
				<minLeafTemperature>-3</minLeafTemperature>
				<minGrowthTemperature>6</minGrowthTemperature>
				<minGoodGrowthTemperature>13</minGoodGrowthTemperature>
				<minSunscaldTemperature>41</minSunscaldTemperature>
				<maxTemperature>41</maxTemperature>
				<temperatureSensitivity>0.1</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>1</suboptimalLightGrowthSensitivity>
				<isGreenManure>true</isGreenManure>
				<manureFertilityFactor>2.1</manureFertilityFactor>
				<weedsMinGrassToAffectGrowth>0.5</weedsMinGrassToAffectGrowth>
				<weedsMaxGrassBeforeDamage>1.3</weedsMaxGrassBeforeDamage>
				<beeCanVisit>true</beeCanVisit>
				<beeVisitBlossomGrowthOffset>0</beeVisitBlossomGrowthOffset>
				<beeVisitingPeriodTicks>30000</beeVisitingPeriodTicks>
				<intercroppingBonus>
					<li>Plant_Rice</li>
					<li>Plant_Potato</li>
					<li>Plant_Corn</li>
					<li>Plant_Lettuce</li>
					<li>Plant_Strawberry</li>
					<li>Plant_Cotton</li>
				</intercroppingBonus>
				<intercroppingMalus>
					<li>Plant_Pea</li>
					<li>Plant_Devilstrand</li>
				</intercroppingMalus>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.4</max>
						<stepGraphicPath>Things/Plant/Lupin/Lupin_Young</stepGraphicPath>
					</li>
					<li>
						<state>Blossom</state>
						<max>1</max>
						<stepGraphicPath>Things/Plant/Lupin/Lupin_Blossom</stepGraphicPath>
						<beautyOffset>12</beautyOffset>
					</li>
				</growthSteps>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="CultivatedPlantBase">
		<defName>Plant_Phacelia</defName>
		<label>phacelia</label>
		<description>Phacelias are a common plant used as green manure. They bloom with small purple blossoms and are nice to look at. Even more bees like these flowers to produce honey.</description>
		<graphicData>
			<texPath>Things/Plant/Phacelia/Phacelia_Blossom</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<pathCost>10</pathCost>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<Flammability>0.8</Flammability>
			<Beauty>2</Beauty>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<plant>
			<growMinGlow>0.3</growMinGlow>
			<lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
			<fertilityMin>0.25</fertilityMin>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>5.7</growDays>
			<harvestWork>160</harvestWork>
			<sowWork>90</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>RaisedBed</li>
				<li>Decorative</li>
			</sowTags>
			<harvestTag>None</harvestTag>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
		<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Small</plantSize>
				<plantWasteYield>8</plantWasteYield>
				<fertilityConsumptionPerDay>0.0065</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.04</moistureConsumptionPerDay>
				<minMoisture>0.3</minMoisture>
				<minOptimalMoisture>0.4</minOptimalMoisture>
				<maxMoisture>0.85</maxMoisture>
				<minAliveTemperature>-5</minAliveTemperature>
				<minLeafTemperature>-5</minLeafTemperature>
				<minGrowthTemperature>5</minGrowthTemperature>
				<minGoodGrowthTemperature>12</minGoodGrowthTemperature>
				<minSunscaldTemperature>55</minSunscaldTemperature>
				<maxTemperature>55</maxTemperature>
				<temperatureSensitivity>0.1</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>1</suboptimalLightGrowthSensitivity>
				<isGreenManure>true</isGreenManure>
				<manureFertilityFactor>1.9</manureFertilityFactor>
				<weedsMinGrassToAffectGrowth>0.4</weedsMinGrassToAffectGrowth>
				<weedsMaxGrassBeforeDamage>1.5</weedsMaxGrassBeforeDamage>
				<beeCanVisit>true</beeCanVisit>
				<beeVisitBlossomGrowthOffset>0</beeVisitBlossomGrowthOffset>
				<beeVisitingPeriodTicks>40000</beeVisitingPeriodTicks>
				<intercroppingBonus>
					<li>Plant_Corn</li>
					<li>Plant_TreeApple</li>
				</intercroppingBonus>
				<intercroppingMalus>
					<li>Plant_Pea</li>
				</intercroppingMalus>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.4</max>
						<stepGraphicPath>Things/Plant/Phacelia/Phacelia_Young</stepGraphicPath>
					</li>
					<li>
						<state>Blossom</state>
						<max>1</max>
						<stepGraphicPath>Things/Plant/Phacelia/Phacelia_Blossom</stepGraphicPath>
						<beautyOffset>6</beautyOffset>
					</li>
				</growthSteps>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="CultivatedPlantBase">
		<defName>Plant_DecorativeCactus</defName>
		<label>decorative cactus</label>
		<description>A small decorative cactus. They bloom rarely, but if they do, they look really beautiful. Cacti need almost no nutritions and water supply, so it also is a good decorative plant to 'set and forget'.</description>
		<thingClass>Terra.PlantPlus_Bloomable</thingClass>
		<graphicData>
			<texPath>Things/Plant/DecorativeCactus/DecorativeCactus_Young</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<pathCost>10</pathCost>
		<statBases>
			<MaxHitPoints>95</MaxHitPoints>
			<Flammability>0.6</Flammability>
			<Beauty>6</Beauty>
			<Nutrition>0.25</Nutrition>
		</statBases>
		<plant>
			<growMinGlow>0.3</growMinGlow>
			<lifespanDaysPerGrowDays>6</lifespanDaysPerGrowDays>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>6</growDays>
			<harvestWork>150</harvestWork>
			<sowWork>150</sowWork>
			<sowMinSkill>3</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>RaisedBed</li>
				<li>Decorative</li>
			</sowTags>
			<harvestTag>None</harvestTag>
			<visualSizeRange>
				<min>0.35</min>
				<max>0.7</max>
			</visualSizeRange>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
		<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Small</plantSize>
				<fertilityConsumptionPerDay>0.001</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.01</moistureConsumptionPerDay>
				<minMoisture>0</minMoisture>
				<minOptimalMoisture>0.1</minOptimalMoisture>
				<maxMoisture>0.7</maxMoisture>
				<minAliveTemperature>2</minAliveTemperature>
				<minLeafTemperature>2</minLeafTemperature>
				<minGrowthTemperature>13</minGrowthTemperature>
				<minGoodGrowthTemperature>19</minGoodGrowthTemperature>
				<minSunscaldTemperature>60</minSunscaldTemperature>
				<maxTemperature>60</maxTemperature>
				<temperatureSensitivity>0.1</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>0.2</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0.3</manureFertilityFactor>
				<weedsMinGrassToAffectGrowth>0.2</weedsMinGrassToAffectGrowth>
				<weedsMaxGrassBeforeDamage>0.6</weedsMaxGrassBeforeDamage>
				<beeCanVisit>true</beeCanVisit>
				<beeVisitBlossomGrowthOffset>0</beeVisitBlossomGrowthOffset>
				<beeVisitingPeriodTicks>25000</beeVisitingPeriodTicks>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.4</max>
					</li>
					<li>
						<state>Ripe</state>
						<max>1</max>
						<beautyOffset>2</beautyOffset>
					</li>
				</growthSteps>
			</li>
			<li Class="Terra.ModExt_Plant_Bloomable">
				<minGrowthToBloom>0.65</minGrowthToBloom>
				<bloomMTBDays>5.0</bloomMTBDays>
				<bloomDurationDays>
					<min>0.8</min>
					<max>1.5</max>
				</bloomDurationDays>
				<beautyOffset>22</beautyOffset>
				<blossomGrowthStep>
					<state>Blossom</state>
					<stepGraphicPath>Things/Plant/DecorativeCactus/DecorativeCactus_Blossom</stepGraphicPath>
				</blossomGrowthStep>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>