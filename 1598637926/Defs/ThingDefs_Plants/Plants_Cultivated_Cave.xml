<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="CavePlantBase">
		<defName>Plant_Champignon</defName>
		<label>champignon</label>
		<description>A small white mushroom. This mushroom can be culticated quite easy compared to other types. Dies when exposed to light.</description>
		<thingClass>Terra.PlantPlus</thingClass>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Champignon</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<pathCost>10</pathCost>
		<ingestible />
		<plant>
			<fertilityMin>0.6</fertilityMin>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>12</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestYield>8</harvestYield>
			<harvestTag>Standard</harvestTag>
			<neverBlightable>true</neverBlightable>
			<harvestedThingDef>RawChampignons</harvestedThingDef>
			<harvestMinGrowth>0.65</harvestMinGrowth>
			<harvestWork>230</harvestWork>
			<sowWork>110</sowWork>
			<sowMinSkill>5</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>RaisedBed</li>
			</sowTags>
			<cavePlant>false</cavePlant>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.0</max>
			</visualSizeRange>
			<topWindExposure>0.05</topWindExposure>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>5</wildClusterWeight>
			<purpose>Food</purpose>
		</plant>
		<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Small</plantSize>
				<fertilityConsumptionPerDay>0.008</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.07</moistureConsumptionPerDay>
				<minMoisture>0.4</minMoisture>
				<minOptimalMoisture>0.5</minOptimalMoisture>
				<maxMoisture>0.9</maxMoisture>
				<minAliveTemperature>5</minAliveTemperature>
				<minLeafTemperature>5</minLeafTemperature>
				<minGrowthTemperature>8</minGrowthTemperature>
				<minGoodGrowthTemperature>14</minGoodGrowthTemperature>
				<minSunscaldTemperature>41</minSunscaldTemperature>
				<maxTemperature>41</maxTemperature>
				<ripeTemperatureThreshold>14</ripeTemperatureThreshold>
				<temperatureSensitivity>0.15</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>1</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0</manureFertilityFactor>
				<intercroppingMalus>
					<li>Plant_Boletus</li>
					<li>Plant_Devilstrand</li>
					<li>Plant_Hops</li>
				</intercroppingMalus>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.65</max>
					</li>
					<li>
						<state>Ripe</state>
						<max>1</max>
					</li>
				</growthSteps>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="CavePlantBase">
