		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>11</glowRadius>
				<glowColor>(35,17,9,0)</glowColor>
			</li>
		</comps>
		<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Medium</plantSize>
				<fertilityConsumptionPerDay>0.007</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.045</moistureConsumptionPerDay>
				<minMoisture>0.45</minMoisture>
				<minOptimalMoisture>0.55</minOptimalMoisture>
				<maxMoisture>0.85</maxMoisture>
				<minAliveTemperature>5</minAliveTemperature>
				<minLeafTemperature>5</minLeafTemperature>
				<minGrowthTemperature>8</minGrowthTemperature>
				<minGoodGrowthTemperature>16</minGoodGrowthTemperature>
				<minSunscaldTemperature>45</minSunscaldTemperature>
				<maxTemperature>45</maxTemperature>
				<ripeTemperatureThreshold>16</ripeTemperatureThreshold>
				<temperatureSensitivity>0.15</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>1</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0</manureFertilityFactor>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.65</max>
						<stepGraphicPath>Things/Plant/RedGigant/RedGigant</stepGraphicPath>
					</li>
					<li>
						<state>Ripe</state>
						<max>1</max>
						<stepGraphicPath>Things/Plant/RedGigant/RedGigant</stepGraphicPath>
					</li>
				</growthSteps>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>
