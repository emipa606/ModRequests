<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="CavePlantBase">
		<defName>Plant_BlackGlowstool</defName>
		<label>black glowstool</label>
		<description>A small dark brown mushroom typically found in caves. This variant of the normal brown glowstool has adapted to live in large deep caves. It smells like an old, dirty rag pulled from the stomach of a rotting muffalo - but it tastes surprisingly good when cooked. Dies when exposed to light.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Beauty>2</Beauty>
			<Nutrition>0.25</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/BlackGlowstool/BlackGlowstool</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<pathCost>10</pathCost>
		<ingestible />
		<plant>
			<fertilityMin>0.15</fertilityMin>
			<fertilitySensitivity>0.15</fertilitySensitivity>
			<growDays>19</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestYield>15</harvestYield>
			<harvestTag>Standard</harvestTag>
			<neverBlightable>true</neverBlightable>
			<harvestedThingDef>RawFungus</harvestedThingDef>
			<harvestMinGrowth>0.65</harvestMinGrowth>
			<harvestWork>170</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>
				<min>0.45</min>
				<max>0.8</max>
			</visualSizeRange>
			<topWindExposure>0.05</topWindExposure>
			<cavePlantWeight>0.22</cavePlantWeight>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>5</wildClusterWeight>
			<purpose>Food</purpose>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>6</glowRadius>
				<glowColor>(5,21,24,0)</glowColor>
			</li>
		</comps>
		<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Small</plantSize>
				<fertilityConsumptionPerDay>0.0065</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.035</moistureConsumptionPerDay>
				<minMoisture>0.35</minMoisture>
				<minOptimalMoisture>0.45</minOptimalMoisture>
				<maxMoisture>0.8</maxMoisture>
				<minAliveTemperature>3</minAliveTemperature>
				<minLeafTemperature>3</minLeafTemperature>
				<minGrowthTemperature>4</minGrowthTemperature>
				<minGoodGrowthTemperature>15</minGoodGrowthTemperature>
				<minSunscaldTemperature>48</minSunscaldTemperature>
				<maxTemperature>48</maxTemperature>
				<ripeTemperatureThreshold>15</ripeTemperatureThreshold>
				<temperatureSensitivity>0.15</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>0</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0</manureFertilityFactor>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.65</max>
						<stepGraphicPath>Things/Plant/BlackGlowstool/BlackGlowstool</stepGraphicPath>
					</li>
					<li>
						<state>Ripe</state>
						<max>1</max>
						<stepGraphicPath>Things/Plant/BlackGlowstool/BlackGlowstool</stepGraphicPath>
					</li>
				</growthSteps>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="CavePlantBase">
		<defName>Plant_RedGigant</defName>
		<label>red gigant</label>
		<description>An enormous red mushroom. Surprisingly this mushroom is eatable and doesn't even taste that bad. Its size and color make this fungus beautiful to look at. It dies when exposed to light.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Beauty>4</Beauty>
			<Nutrition>0.5</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/RedGigant/RedGigant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.2, 0.3, 0.13)</volume>
				<offset>(-0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<pathCost>25</pathCost>
		<ingestible />
		<plant>
			<fertilityMin>0.3</fertilityMin>
			<fertilitySensitivity>0.15</fertilitySensitivity>
			<growDays>28</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestYield>24</harvestYield>
			<harvestTag>Standard</harvestTag>
			<neverBlightable>true</neverBlightable>
			<harvestedThingDef>RawFungus</harvestedThingDef>
			<harvestMinGrowth>0.65</harvestMinGrowth>
			<harvestWork>160</harvestWork>
			<visualSizeRange>
				<min>0.4</min>
				<max>1.4</max>
			</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<cavePlantWeight>0.04</cavePlantWeight>
