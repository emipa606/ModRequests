<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Fruit trees ==============================-->

	<ThingDef ParentName="FruitTreeBase">
		<defName>Plant_TreeApple</defName>
		<label>apple tree</label>
		<description>An apple tree. Once grown, apples can be harvested regularly over a long period of time. Apples are tasty even when eaten raw.</description>
		<graphicData>
			<texPath>Things/Plant/TreeApple/TreeApple_Ripe</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.8</Flammability>
			<Nutrition>1.7</Nutrition>
		</statBases>
		<plant>
			<fertilityMin>0.6</fertilityMin>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<growDays>40</growDays>
			<harvestYield>15</harvestYield>
			<harvestedThingDef>RawApples</harvestedThingDef>
			<harvestMinGrowth>0.84</harvestMinGrowth>
			<harvestAfterGrowth>0.79</harvestAfterGrowth>
			<sowWork>1900</sowWork>
			<harvestWork>240</harvestWork>
			<sowMinSkill>7</sowMinSkill>
			<dieIfLeafless>false</dieIfLeafless>
			<leaflessGraphicPath>Things/Plant/TreeApple/TreeApple_Leafless</leaflessGraphicPath>
		</plant>
		<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Large</plantSize>
				<maxHarvestCount>30</maxHarvestCount>
				<plantWasteYield>3</plantWasteYield>
				<harvestedThingDefOnCut>HardwoodLog</harvestedThingDefOnCut>
				<harvestYieldOnCut>45</harvestYieldOnCut>
				<fertilityConsumptionPerDay>0.017</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.16</moistureConsumptionPerDay>
				<minMoisture>0.3</minMoisture>
				<minOptimalMoisture>0.4</minOptimalMoisture>
				<maxMoisture>1</maxMoisture>
				<minWater>0</minWater>
				<maxWater>0.3</maxWater>
				<waterTypeFlags>None</waterTypeFlags>
				<minAliveTemperature>-20</minAliveTemperature>
				<minLeafTemperature>4</minLeafTemperature>
				<minGrowthTemperature>8</minGrowthTemperature>
				<minGoodGrowthTemperature>15</minGoodGrowthTemperature>
				<minSunscaldTemperature>45</minSunscaldTemperature>
				<maxTemperature>50</maxTemperature>
				<ripeTemperatureThreshold>21</ripeTemperatureThreshold>
				<temperatureSensitivity>0.2</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>1</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0</manureFertilityFactor>
				<beeCanVisit>true</beeCanVisit>
				<beeVisitBlossomGrowthOffset>0.0067</beeVisitBlossomGrowthOffset>
				<beeVisitingPeriodTicks>10000</beeVisitingPeriodTicks>
				<intercroppingBonus>
					<li>Plant_Phacelia</li>
				</intercroppingBonus>
				<intercroppingMalus>
					<li>Plant_Potato</li>
					<li>Plant_Asparagus</li>
				</intercroppingMalus>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.65</max>
						<stepGraphicPath>Things/Plant/TreeApple/TreeApple_Young</stepGraphicPath>
					</li>
					<li>
						<state>Young</state>
						<max>0.8</max>
						<stepGraphicPath>Things/Plant/TreeApple/TreeApple_Young</stepGraphicPath>
					</li>
					<li>
						<state>Blossom</state>
						<max>0.84</max>
						<stepGraphicPath>Things/Plant/TreeApple/TreeApple_Blossom</stepGraphicPath>
						<beautyOffset>6</beautyOffset>
					</li>
					<li>
						<state>Unripe</state>
						<max>0.92</max>
						<stepGraphicPath>Things/Plant/TreeApple/TreeApple_Unripe</stepGraphicPath>
						<beautyOffset>2</beautyOffset>
					</li>
					<li>
						<state>Ripe</state>
						<max>1</max>
						<stepGraphicPath>Things/Plant/TreeApple/TreeApple_Ripe</stepGraphicPath>
						<beautyOffset>4</beautyOffset>
					</li>
				</growthSteps>
			</li>
		</modExtensions>
	</ThingDef>

