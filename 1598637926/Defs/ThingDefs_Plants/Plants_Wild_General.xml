<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>Plant_SavannaGrass</defName>
		<label>savanna grass</label>
		<description>Wild savanna grass. Grows anywhere there is at least a little water in the ground and minimal fertility.</description>
		<thingClass>Terra.PlantPlus</thingClass>
		<graphicData>
			<texPath>Things/Plant/SavannaGrass/SavannaGrass_Ripe</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Flammability>1.3</Flammability>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<ingestible />
		<plant>
			<fertilityMin>0.15</fertilityMin>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>2.5</growDays>
			<harvestWork>40</harvestWork>
			<maxMeshCount>9</maxMeshCount>
			<visualSizeRange>
				<min>0.4</min>
				<max>0.6</max>
			</visualSizeRange>
			<topWindExposure>0.4</topWindExposure>
			<dieIfLeafless>false</dieIfLeafless>
			<leaflessGraphicPath>Things/Plant/SavannaGrass/SavannaGrass_Leafless</leaflessGraphicPath>
			<wildOrder>1</wildOrder>
		</plant>
		<modExtensions>
			<li Class="Terra.ModExt_Plant">
				<plantSize>Small</plantSize>
				<fertilityConsumptionPerDay>0.0015</fertilityConsumptionPerDay>
				<moistureConsumptionPerDay>0.015</moistureConsumptionPerDay>
				<minMoisture>0.1</minMoisture>
				<minOptimalMoisture>0.25</minOptimalMoisture>
				<maxMoisture>0.9</maxMoisture>
				<minAliveTemperature>-4</minAliveTemperature>
				<minLeafTemperature>4</minLeafTemperature>
				<minGrowthTemperature>5</minGrowthTemperature>
				<minGoodGrowthTemperature>14</minGoodGrowthTemperature>
				<minSunscaldTemperature>59</minSunscaldTemperature>
				<maxTemperature>64</maxTemperature>
				<temperatureSensitivity>0.2</temperatureSensitivity>
				<suboptimalLightGrowthSensitivity>0.5</suboptimalLightGrowthSensitivity>
				<isGreenManure>false</isGreenManure>
				<manureFertilityFactor>0.3</manureFertilityFactor>
				<beeCanVisit>true</beeCanVisit>
				<beeVisitBlossomGrowthOffset>0</beeVisitBlossomGrowthOffset>
				<beeVisitingPeriodTicks>60000</beeVisitingPeriodTicks>
				<growthSteps>
					<li>
						<state>Young</state>
						<max>0.6</max>
					</li>
					<li>
						<state>Ripe</state>
						<max>1</max>
					</li>
				</growthSteps>
			</li>
		</modExtensions>
	</ThingDef>

