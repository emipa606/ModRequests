<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>Make_StonePowder</defName>
		<label>make stone powder</label>
		<description>Make stone powder by grinding stone chunks to fine powder.</description>
		<jobString>Making stone powder.</jobString>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<workAmount>2000</workAmount>
		<workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
		<recipeUsers>
			<li>TableStonecutter</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneChunks</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<StonePowder>50</StonePowder>
		</products>
	</RecipeDef>

	<RecipeDef>
		<defName>Make_ChemfuelFromPlantWaste</defName>
		<label>make chemfuel from plant waste</label>
		<description>Make a batch of chemfuel by extracting biofuel from organic plant waste.</description>
		<jobString>Refining chemfuel from plant waste.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>2000</workAmount>
		<workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>PlantWaste</li>
					</thingDefs>
				</filter>
				<count>70</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>PlantWaste</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Chemfuel>35</Chemfuel>
		</products>
	</RecipeDef>

	<RecipeDef>
		<defName>Make_ChemicalFertilizer</defName>
		<label>make chemical fertilizer</label>
		<description>Make chemical fertilizer from stone powder and nitrogen extracted from the air.</description>
		<jobString>Refining chemical fertilizer.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>2500</workAmount>
		<workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>StonePowder</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>StonePowder</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<ChemicalFertilizer>10</ChemicalFertilizer>
		</products>
	</RecipeDef>

	<RecipeDef>
		<defName>Make_Cloth</defName>
		<label>make cloth</label>
