<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ======= Meal thoughts ========= -->

	<ThoughtDef>
		<defName>AteExceptionalMeal</defName>
		<durationDays>0.55</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate excellent meal</label>
				<description>That exceptional meal was amazing. It nourished my body and amazed my soul.</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

  <!-- ======= Special food thoughts ========= -->

	<ThoughtDef>
		<defName>AteHoney</defName>
		<durationDays>0.3</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate delicious honey</label>
				<description>I ate some honey. It was a delicious snack.</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>AteSilage</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate silage</label>
				<description>I had to eat silage. Eating rotten plant waste isn't one of the thinks I'm proud of. It's like I don't get to be human any more.</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>
