<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>Underwater</defName>
		<defaultLabelColor>(0.5, 0.55, 1.0)</defaultLabelColor>
		<label>underwater</label>
		<stages>
			<li>
				<label>lowered stats</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.5</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<postFactor>0.5</postFactor>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>Suffocating</defName>
		<defaultLabelColor>(1.0, 0.8, 0.9)</defaultLabelColor>
		<label>suffocating</label>
		<lethalSeverity>1</lethalSeverity>
		<stages>
			<li>
				<label>no water</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>no water</label>
				<minSeverity>0.02</minSeverity>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.35</minSeverity>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.5</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.4</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>Drowning</defName>
		<defaultLabelColor>(0.5, 0.55, 1.0)</defaultLabelColor>
		<label>drowning</label>
		<lethalSeverity>1</lethalSeverity>
		<stages>
			<li>
				<label>holding breath</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>holding breath</label>
				<minSeverity>0.02</minSeverity>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<postFactor>0.5</postFactor>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<postFactor>0.5</postFactor>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.35</minSeverity>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<postFactor>0.5</postFactor>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.5</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.4</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>EmergencyDrowningProtection</defName>
		<defaultLabelColor>(0.65, 0.7, 1.0)</defaultLabelColor>
		<label>drowning protection</label>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1.0</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>emergency cryptosleep</label>
				<painFactor>0</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>