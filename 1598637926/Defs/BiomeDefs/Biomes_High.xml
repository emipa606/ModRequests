<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<BiomeDef>
		<defName>DesertHighPlains</defName>
		<label>desert high plains</label>
		<description>A deserty elevated plain which is often more rocky than the common sand deserts. These remote areas have little to no vegetation because of the weather and soil conditions, even through the climate is quite humid. Some animals live in these harsh conditions or roam for fresh water.</description>
		<workerClass>Terra.BiomeWorker_DesertHighPlains</workerClass>
		<animalDensity>0.15</animalDensity>
		<plantDensity>0.006</plantDensity>
		<hasVirtualPlants>false</hasVirtualPlants>
		<settlementSelectionWeight>0.50</settlementSelectionWeight>
		<movementDifficulty>1</movementDifficulty>
		<texture>World/Biomes/DesertHighPlains</texture>
		<forageability>0</forageability>
		<wildPlantRegrowDays>40</wildPlantRegrowDays>
		<soundsAmbient>
			<li>Ambient_Wind_Desolate</li>
		</soundsAmbient>
		<diseaseMtbDays>80</diseaseMtbDays>
		<diseases>
			<li>
				<diseaseInc>Disease_Flu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_Plague</diseaseInc>
				<commonality>60</commonality>
			</li>
			<li>
				<diseaseInc>Disease_GutWorms</diseaseInc>
				<commonality>40</commonality>
			</li>
			<li>
				<diseaseInc>Disease_MuscleParasites</diseaseInc>
				<commonality>70</commonality>
			</li>
			<li>
				<diseaseInc>Disease_FibrousMechanites</diseaseInc>
				<commonality>40</commonality>
			</li>
			<li>
				<diseaseInc>Disease_SensoryMechanites</diseaseInc>
				<commonality>40</commonality>
			</li>
			<li>
				<diseaseInc>Disease_AnimalFlu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_AnimalPlague</diseaseInc>
				<commonality>70</commonality>
			</li>
		</diseases>
		<terrainsByFertility>
			<li>
				<terrain>DrySand</terrain>
				<min>-999</min>
				<max>0.23</max>
			</li>
			<li>
				<terrain>NormalSand</terrain>
				<min>0.23</min>
				<max>0.62</max>
			</li>
			<li>
				<terrain>NormalBarrenGravel</terrain>
				<min>0.62</min>
				<max>0.93</max>
			</li>
			<li>
				<terrain>FillerStone</terrain>
				<min>0.93</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.006</perlinFrequency>
				<thresholds>
					<li>
						<terrain>NormalBarrenGravel</terrain>
						<min>0.22</min>
						<max>0.29</max>
					</li>
					<li>
						<terrain>WetBarrenGravel</terrain>
						<min>0.29</min>
						<max>0.40</max>
					</li>
					<li>
						<terrain>NormalBarrenGravel</terrain>
						<min>0.40</min>
						<max>0.48</max>
					</li>
				</thresholds>
			</li>
		</terrainPatchMakers>
		<baseWeatherCommonalities>
			<Clear>18</Clear>
			<Fog>4</Fog>
			<Storm>1</Storm>
			<RainyStorm>1</RainyStorm>
			<Sandstorm>1</Sandstorm>
			<Blizzard>1</Blizzard>
			<FoggyRain>1</FoggyRain>
			<SnowGentle>1</SnowGentle>
			<SnowHard>0.5</SnowHard>
		</baseWeatherCommonalities>
		<wildPlants>
			<Plant_Grass>3.5</Plant_Grass>
			<Plant_Moss>0.5</Plant_Moss>
			<Plant_Bush>0.3</Plant_Bush>
