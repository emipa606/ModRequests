<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <defName>SZGene_YearBeast_Flamethrower</defName>
    <label>Year Spitfire</label>
    <description>The fire-breathing skill extracted from Nian Beast, the bearer can spray flames into a fan-shaped area like Nian Beast.</description>
    <iconPath>AncientChineseBeast/YearBeast/FlameIcon</iconPath>
    <displayCategory>Archite</displayCategory>
    <marketValueFactor>1.5</marketValueFactor>
    <abilities>
      <li>SZ_YearBeast_Flamethrower</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>SZ_YearBeast_Flamethrower</AbilityDef>
    </descriptionHyperlinks>
    <biostatCpx>10</biostatCpx>
    <biostatMet>-3</biostatMet>
    <biostatArc>1</biostatArc>
    <symbolPack>
      <wholeNameSymbols>
        <li>
          <symbol>年兽的祝福</symbol>
        </li>
        <li>
          <symbol>年兽的恩赐</symbol>
        </li>
      </wholeNameSymbols>
    </symbolPack>
    <randomChosen>false</randomChosen>
  </GeneDef>

  <GeneDef>
    <defName>SZGene_YearBeast_Skin</defName>
    <label>Year Scale</label>
    <description>Nian Beast's armor gene, which can greatly improve its defense ability, but it is extremely vulnerable to firecrackers.</description>
    <iconPath>AncientChineseBeast/YearBeast/SkinIcon</iconPath>
    <displayCategory>Archite</displayCategory>
    <marketValueFactor>1.5</marketValueFactor>
    <statFactors>
      <IncomingDamageFactor>0.5</IncomingDamageFactor>
    </statFactors>
    <damageFactors>
      <SZ_Firecracker_Flame>20</SZ_Firecracker_Flame>
      <SZ_Firecracker_FlameB>20</SZ_Firecracker_FlameB>
      <SZ_Firecracker_FlameC>20</SZ_Firecracker_FlameC>
    </damageFactors>
    <biostatCpx>10</biostatCpx>
    <biostatMet>-4</biostatMet>
    <biostatArc>1</biostatArc>
    <symbolPack>
      <wholeNameSymbols>
        <li>
          <symbol>年兽的祝福</symbol>
        </li>
        <li>
          <symbol>年兽的恩赐</symbol>
        </li>
      </wholeNameSymbols>
    </symbolPack>
    <randomChosen>false</randomChosen>
  </GeneDef>

  <GeneDef>
    <defName>SZGene_YearBeast_Horn</defName>
    <label>Year Pointed</label>
    <description>The bearer grows a nian-like horn, which is extremely sharp.</description>
    <iconPath>AncientChineseBeast/YearBeast/HornIcon</iconPath>
    <displayCategory>Archite</displayCategory>
    <marketValueFactor>1.5</marketValueFactor>
    <geneClass>AncientChineseBeast.Gene_Hediffs</geneClass>
    <descriptionHyperlinks>
      <HediffDef>SZ_Year_Horn</HediffDef>
    </descriptionHyperlinks>
    <modExtensions>
      <li Class="AncientChineseBeast.DefModExtension_GeneHediffs">
        <hediffs>
          <li>
            <bodyPartGroup>HeadAttackTool</bodyPartGroup>
            <hediff>SZ_Year_Horn</hediff>
          </li>
        </hediffs>
      </li>
    </modExtensions>
    <biostatCpx>10</biostatCpx>
    <biostatMet>-5</biostatMet>
    <biostatArc>1</biostatArc>
    <renderNodeProperties>
      <li>
        <texPath>AncientChineseBeast/YearBeast/HediffHorn</texPath>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <overlayLayer>Head</overlayLayer>
        <parentTagDef>Head</parentTagDef>
        <drawData>
          <dataNorth>
            <offset>(0, -0.1, 0)</offset>
          </dataNorth>
          <dataWest>
            <flip>true</flip>
          </dataWest>
        </drawData>
      </li>
    </renderNodeProperties>
    <symbolPack>
      <wholeNameSymbols>
        <li>
          <symbol>年兽的祝福</symbol>
        </li>
        <li>
          <symbol>年兽的恩赐</symbol>
        </li>
      </wholeNameSymbols>
    </symbolPack>
    <randomChosen>false</randomChosen>
  </GeneDef>

</Defs>