<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef>
    <defName>SZ_SeXieShootA</defName>
    <label>Crystal Spur Shot</label>
    <description>Fires needles coated with horse poison, which causes enemies to fall to the ground instantly in pain.</description>
    <iconPath>AncientChineseBeast/SeXie/ShootIcon</iconPath>
    <cooldownTicksRange>900</cooldownTicksRange>
    <jobDef>UseVerbOnThingStatic</jobDef>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
    <verbProperties>
      <verbClass>AncientChineseBeast.Verb_ShootStatic</verbClass>
      <accuracyTouch>0.8</accuracyTouch>
      <accuracyShort>0.8</accuracyShort>
      <accuracyMedium>0.8</accuracyMedium>
      <accuracyLong>0.8</accuracyLong>
      <hasStandardCommand>true</hasStandardCommand>
      <soundCast>Bow_Small</soundCast>
      <defaultProjectile>SZ_SeXiePoisonousThorn</defaultProjectile>
      <warmupTime>2</warmupTime>
      <ticksBetweenBurstShots>9</ticksBetweenBurstShots>
      <burstShotCount>3</burstShotCount>
      <range>20.9</range>
    </verbProperties>
  </AbilityDef>
