<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef>
    <defName>SZ_MingShe_SoundWave</defName>
    <label>Sound Wave</label>
    <description>Sprays flames in a fan-shaped area.</description>
    <iconPath>AncientChineseBeast/MingShe/SoundWaveIcon</iconPath>
    <writeCombatLog>True</writeCombatLog>
    <cooldownTicksRange>900</cooldownTicksRange>
    <jobDef>UseVerbOnThingStatic</jobDef>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
    <verbProperties>
      <verbClass>AncientChineseBeast.Verb_CastAbility</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <muzzleFlashScale>9</muzzleFlashScale>
      <range>29.9</range>
      <defaultCooldownTime>3</defaultCooldownTime>
      <warmupTime>0.1</warmupTime>
      <soundCast>SZ_SoundWave</soundCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li>
        <compClass>AncientChineseBeast.CompAbilityEffect_SoundWave</compClass>
      </li>
    </comps>
  </AbilityDef>
<!-- 咕咕咕咕咕咕咕咕咕咕-->
  <AbilityDef>
    <defName>SZ_MingShe_WindWing</defName>
    <label>Wind Shield</label>
    <description>Slices enemies within range of the wind shield and bounces projectiles (both bullets and projectiles)</description>
    <iconPath>AncientChineseBeast/MingShe/WindWingIcon</iconPath>
    <cooldownTicksRange>2700</cooldownTicksRange>
    <abilityClass>AncientChineseBeast.Ability_WindBarrier</abilityClass>
    <jobDef>UseVerbOnThingStatic</jobDef>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
    <verbProperties>
      <verbClass>AncientChineseBeast.Verb_CastAbility</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <range>-1</range>
      <targetable>false</targetable>
      <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
      
    </verbProperties>
    <comps>
      <li>
        <compClass>AncientChineseBeast.CompAbilityEffect_WindBarrier</compClass>
      </li>
    </comps>
  </AbilityDef>
  
  
</Defs>