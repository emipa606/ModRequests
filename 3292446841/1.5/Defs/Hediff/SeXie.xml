<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>SZ_ScorpionPoison</defName>
    <label>Inverted Horse Poison</label>
    <description>The unique poison carried by Sexie will make the enemy fall to the ground in pain.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <painOffset>1</painOffset>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>SZ_Strength</defName>
    <label>Strange Power</label>
    <description>This kind of strange power will confuse all the enemies within the range of influence, and the combat effectiveness will be greatly reduced.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1.0, 0.2, 0)</defaultLabelColor>
    <stages>
      <li>
        <statFactors>
          <MeleeDamageFactor>2</MeleeDamageFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
</Defs>
