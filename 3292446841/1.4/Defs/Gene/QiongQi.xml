<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <defName>SZGene_QiongQi_FlyingStrike</defName>
    <label>Qiongqi-Thrust</label>
    <description>With the thrusting skill extracted from genetic engineering, the acquirer can stab at the enemy's back row like Qiongqi, tearing open the enemy's defense line.</description>
    <iconPath>AncientChineseBeast/QiongQi/FlyingSrikeIcon</iconPath>
    <displayCategory>Archite</displayCategory>
    <marketValueFactor>1.5</marketValueFactor>
    <abilities>
      <li>SZ_QiongQi_FlyingStrike</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>SZ_QiongQi_FlyingStrike</AbilityDef>
    </descriptionHyperlinks>
    <graphicData>
      <graphicPath>AncientChineseBeast/QiongQi/Wing</graphicPath>
      <color>(255, 255, 255)</color>
      <drawOffsetSouth>(0,-0.3,0)</drawOffsetSouth>
      <drawOffsetNorth>(0,0.3,0)</drawOffsetNorth>
      <drawScale>3</drawScale>
      <drawLoc>Tailbone</drawLoc>
    </graphicData>
    <biostatCpx>10</biostatCpx>
    <biostatMet>-2</biostatMet>
    <biostatArc>1</biostatArc>
    <symbolPack>
      <wholeNameSymbols>
        <li>
          <symbol>穷奇的祝福</symbol>
        </li>
        <li>
          <symbol>穷奇的恩赐</symbol>
        </li>
      </wholeNameSymbols>
    </symbolPack>
    <randomChosen>false</randomChosen>
  </GeneDef>

  <GeneDef>
    <defName>SZGene_QiongQi_Eyes</defName>
    <label>Qiongqi-eye</label>
    <description>The Qiongqi Eye extracted by genetic engineering can endow the wearer with Qiongqi's eyesight. This kind of vision will make it have a high chance of dodging melee and long-range skills.</description>
    <iconPath>AncientChineseBeast/QiongQi/EyesIcon</iconPath>
    <displayCategory>Archite</displayCategory>
    <marketValueFactor>1.5</marketValueFactor>
    <biostatCpx>10</biostatCpx>
    <biostatMet>-4</biostatMet>
    <biostatArc>1</biostatArc>
    <symbolPack>
      <wholeNameSymbols>
        <li>
          <symbol>穷奇的祝福</symbol>
        </li>
        <li>
          <symbol>穷奇的恩赐</symbol>
        </li>
      </wholeNameSymbols>
    </symbolPack>
    <randomChosen>false</randomChosen>
  </GeneDef>

  <GeneDef>
    <defName>SZGene_QiongQi_Scratch</defName>
    <label>Qiongqi-claw</label>
    <description>Qiongqi sharp claws, such sharp claws can easily tear through the enemy's protection, and at the same time greatly increase the penetration rate in melee combat.</description>
    <iconPath>AncientChineseBeast/QiongQi/ScratchIcon</iconPath>
    <displayCategory>Archite</displayCategory>
    <marketValueFactor>1.5</marketValueFactor>
    <geneClass>AncientChineseBeast.Gene_Hediffs</geneClass>
    <descriptionHyperlinks>
      <HediffDef>SZ_QiongQi_Scratch</HediffDef>
    </descriptionHyperlinks>
    <modExtensions>
      <li Class="AncientChineseBeast.DefModExtension_GeneHediffs">
        <hediffs>
          <li>
            <bodyPart>Hand</bodyPart>
            <hediff>SZ_QiongQi_Scratch</hediff>
          </li>
        </hediffs>
      </li>
    </modExtensions>
    <biostatCpx>10</biostatCpx>
    <biostatMet>-3</biostatMet>
    <biostatArc>1</biostatArc>
    <symbolPack>
      <wholeNameSymbols>
        <li>
          <symbol>年兽的祝福</symbol>
        </li>
        <li>
          <symbol>年兽的恩赐</symbol>
        </li>
      </wholeNameSymbols>
    </symbolPack>
    <randomChosen>false</randomChosen>
  </GeneDef>

</Defs>