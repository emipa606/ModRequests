<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef>
    <defName>SZ_YearBeast_Flamethrower</defName>
    <label>Fire breathing</label>
    <description>Sprays flames in a fan-shaped area.</description>
    <iconPath>AncientChineseBeast/YearBeast/FlameIcon</iconPath>
    <writeCombatLog>True</writeCombatLog>
    <cooldownTicksRange>900</cooldownTicksRange>
    <jobDef>UseVerbOnThingStatic</jobDef>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
    <verbProperties>
      <verbClass>AncientChineseBeast.Verb_CastAbility</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <muzzleFlashScale>9</muzzleFlashScale>
      <range>14.9</range>
      <defaultCooldownTime>3</defaultCooldownTime>
      <warmupTime>2</warmupTime>
      <soundCast>Shot_MiniFlameblaster</soundCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li>
        <compClass>AncientChineseBeast.CompAbilityEffect_JetFlame</compClass>
      </li>
    </comps>
  </AbilityDef>
</Defs>