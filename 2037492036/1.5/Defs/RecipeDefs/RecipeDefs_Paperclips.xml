<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>MakePaperclips</defName>
    <label>make EMC (take 1 item)</label>
    <description>Make EMC, processing 1 item (10 for small volume) at once.</description>
    <jobString>Making EMC.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Drill</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>60</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
          <disallowedThingDefs>
            <li>Paperclip</li>
          </disallowedThingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Root</li>
      </categories>
      <disallowedThingDefs>
        <li>Paperclip</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
    <allowMixingIngredients>true</allowMixingIngredients>
    <products>      <!-- Products are handled in the Building_PaperclipFactory class -->
      <Paperclip>1</Paperclip>
    </products>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>PaperclipProduction</researchPrerequisite>
  </RecipeDef>

