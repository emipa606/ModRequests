    </stuffProps>
    <modExtensions>
      <li Class="ProjectRimFactory.Industry.DefModExtension_AtomicReconstructorResearchPrerequisite">
        <ignoreMainPrerequisites>false</ignoreMainPrerequisites>
        <prerequisites>
          <li>PRFNanoMaterials</li>
        </prerequisites>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- =============================== Z-Composite =================================== -->
  <ThingDef ParentName="PRFResourceBase">
    <defName>PRFZComposite</defName>
    <label>Z-Composite</label>
    <description>An exotic material that can posess virtually any emergent property under the right conditions. Functions as a wood, metal, stone, or fabric. It is rigid yet easy to bend, sharp yet easy to mold.</description>
    <graphicData>
      <texPath>Common/Composite</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(112,48,160)</color>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <MarketValue>400</MarketValue>
      <Mass>1</Mass>
      <SharpDamageMultiplier>15.0</SharpDamageMultiplier>
      <BluntDamageMultiplier>15.0</BluntDamageMultiplier>
      <StuffEffectMultiplierArmor>1.0</StuffEffectMultiplierArmor>
      <StuffPower_Insulation_Cold>50.0</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>50.0</StuffPower_Insulation_Heat>
      <StuffPower_Armor_Sharp>8.0</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>8.0</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>8.0</StuffPower_Armor_Heat>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stackLimit>75</stackLimit>
    <stuffProps>
      <categories>
        <li>Metallic</li>
        <li>Stony</li>
        <li>Woody</li>
        <li>Fabric</li>
      </categories>
      <color>(112,48,160)</color>
      <commonality>0</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
	  <soundImpactMelee>BulletImpact_Metal</soundImpactMelee>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statOffsets>
        <Beauty>24</Beauty>
        <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
        <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
        <ArmorRating_Heat>0.1</ArmorRating_Heat>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>40</MaxHitPoints>
        <Flammability>0</Flammability>
        <WorkToMake>0.1</WorkToMake>
        <WorkToBuild>0.1</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>0.2</MeleeWeapon_CooldownMultiplier>
        <DoorOpenSpeed>2.0</DoorOpenSpeed>
        <Beauty>10</Beauty>
      </statFactors>
    </stuffProps>
    <modExtensions>
      <li Class="ProjectRimFactory.Industry.DefModExtension_AtomicReconstructorResearchPrerequisite">
        <ignoreMainPrerequisites>false</ignoreMainPrerequisites>
        <prerequisites>
          <li>PRFVanometrics</li>
        </prerequisites>
      </li>
    </modExtensions>
  </ThingDef>



