  <!-- =============================== Volatite chunk =================================== -->
  <ThingDef ParentName="PRFResourceBase">
    <defName>PRFVolatiteChunk</defName>
    <label>Volatite chunk</label>
    <description>This item cannot be used as a material. It is used in the production of vanometrics. It is so volatile that it disintegrates in 24 hours.</description>
    <graphicData>
      <texPath>Things/Item/Chunk/ChunkStone</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <flipExtraRotation>80</flipExtraRotation>
      <color>(255,0,0)</color>
    </graphicData>
    <resourceReadoutPriority>Uncounted</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>100</MarketValue>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>20</Mass>
    </statBases>
    <thingCategories>
      <li>Chunks</li>
    </thingCategories>
    <stackLimit>1</stackLimit>
    <drawGUIOverlay>false</drawGUIOverlay>
    <tradeability>None</tradeability>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="ProjectRimFactory.Archo.CompProperties_Unstable">
        <ticksToDisintegrate>60000</ticksToDisintegrate>
      </li>
    </comps>
    <modExtensions>
      <li Class="ProjectRimFactory.Industry.DefModExtension_AtomicReconstructorResearchPrerequisite">
        <ignoreMainPrerequisites>true</ignoreMainPrerequisites>
        <prerequisites>
          <li>PRFVanometrics</li>
        </prerequisites>
      </li>
    </modExtensions>
  </ThingDef>
</Defs>
