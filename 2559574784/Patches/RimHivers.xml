<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Rim-Hivers!</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/LifeStageDef[defName = "HiverBaby"]</xpath>
          <value>
            <bodySizeFactor>0.5</bodySizeFactor>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/LifeStageDef[defName = "QueenBaby"]</xpath>
          <value>
            <bodySizeFactor>0.5</bodySizeFactor>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>