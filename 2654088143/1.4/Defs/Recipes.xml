    <label>make sand from stone chunk</label>
    <description>Make sand x20 from stone chunk.</description>
    <jobString>Making sand.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>800</workAmount>
    <targetCountAdjustment>30</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <SR_Sand>20</SR_Sand>
    </products>
    <recipeUsers>
      <li>TableStonecutter</li>
    </recipeUsers>
  </RecipeDef>
  
