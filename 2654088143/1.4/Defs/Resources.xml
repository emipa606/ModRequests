<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ResourceBase">
     <defName>SR_Soil</defName>
    <label>soil</label>
    <description>Soil. Dirt. You know, the plain old brown stuff on the ground what things grow in.</description>
    <graphicData>
      <texPath>ResourceSoil</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>.01</MarketValue>
      <Mass>0.6</Mass>
    </statBases>
    <thingCategories>
      <li>Soils</li>
    </thingCategories>
    <stackLimit>75</stackLimit>
  </ThingDef>
  
    <ThingDef ParentName="ResourceBase">
     <defName>SR_RichSoil</defName>
    <label>rich soil</label>
    <description>This is the good stuff, soil that makes plants grow much more rapidly.</description>
    <graphicData>
      <texPath>ResourceRichSoil</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>.1</MarketValue>
      <Mass>0.6</Mass>
    </statBases>
    <thingCategories>
      <li>Soils</li>
    </thingCategories>
    <stackLimit>75</stackLimit>
  </ThingDef>
  
<ThingDef ParentName="ResourceBase">
     <defName>SR_Sand</defName>
    <label>sand</label>
    <description>Sand can be used for various construction purpose and processed into glass, but it isn't very hospitable for plants.</description>
    <graphicData>
      <texPath>ResourceSand</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>.01</MarketValue>
      <Mass>0.6</Mass>
    </statBases>
    <thingCategories>
      <li>Soils</li>
    </thingCategories>
    <stackLimit>75</stackLimit>
  </ThingDef>
  
  <ThingDef ParentName="ResourceBase">
     <defName>SR_Gravel</defName>
    <label>stony soil</label>
    <description>Plants can grow in this, but it's not the best.</description>
    <graphicData>
      <texPath>ResourceGravel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>.005</MarketValue>
      <Mass>0.6</Mass>
    </statBases>
    <thingCategories>
      <li>Soils</li>
    </thingCategories>
    <stackLimit>75</stackLimit>
  </ThingDef>
  
  <ThingDef ParentName="ResourceBase">
     <defName>SR_Ice</defName>
    <label>ice</label>
    <description>Nothing's going to grow in this, but maybe it has other uses?</description>
    <graphicData>
      <texPath>ResourceIce</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>.005</MarketValue>
      <Mass>0.6</Mass>
    </statBases>
    <thingCategories>
      <li>Soils</li>
    </thingCategories>
    <stackLimit>75</stackLimit>
    <comps>
	<li Class="SR.CompProperties_Meltable"/>
    </comps>
    <tickerType>Rare</tickerType>
  </ThingDef>
  
</Defs>