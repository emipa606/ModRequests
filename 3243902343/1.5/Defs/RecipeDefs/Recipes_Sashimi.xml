						<li>VCEF_RawFishCategory</li>
					</categories>
				</filter>
				<count>0.8</count>
			</li>
		</ingredients>
		<products>
			<VCESS_Sashimi>4</VCESS_Sashimi>
		</products>		
	</RecipeDef>


    <!-- Gourmet-->
    <!-- Meal -->
    <ThingDef ParentName="MealCooked">
		<defName>VCESS_SashimiGourmet</defName>
		<label>sashimi (gourmet)</label>
		<description>Sashimi features thinly sliced, fresh raw fish or seafood, elegantly presented without rice. This delicacy emphasizes the natural flavors and textures of the seafood, accompanied by soy sauce and wasabi.</description>
		<graphicData>
			<texPath>Things/Meals/VCESS_SashimiGourmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>70</MarketValue>
			<WorkToMake>800</WorkToMake>
			<Nutrition>0.7</Nutrition>
		</statBases>
		<rotatable>false</rotatable>
		<ingestible>
			<preferability>MealLavish</preferability>
            <optimalityOffsetHumanlikes>20</optimalityOffsetHumanlikes>
			<tasteThought>VCE_AteGourmetSushi</tasteThought>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
		</ingestible>		
	</ThingDef>

