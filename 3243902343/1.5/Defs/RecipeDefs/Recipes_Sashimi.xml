<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- Meal -->
    <ThingDef ParentName="MealCooked">
		<defName>VCESS_Sashimi</defName>
		<label>sashimi (simple)</label>
		<description>Sashimi features thinly sliced, fresh raw fish or seafood, elegantly presented without rice. It is celebrated for its freshness, simplicity, and quick preparation.</description>
		<graphicData>
			<texPath>Things/Meals/VCESS_Sashimi</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>15</MarketValue>
			<WorkToMake>300</WorkToMake>
			<Nutrition>0.70</Nutrition>
		</statBases>
		<rotatable>false</rotatable>
		<ingestible>
			<preferability>MealSimple</preferability>
			<tasteThought>VCE_AteSimpleSushi</tasteThought>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
		</ingestible>		
	</ThingDef>

	<!-- Recipe (simple) -->

	<RecipeDef ParentName="VCE_CookSushiMealBase">
		<defName>VCESS_CookSashimiSimple</defName>
		<label>make sashimi (simple)</label>
		<description>Make a serving of Sashimi quickly from choice fish.</description>
		<jobString>Making sashimi (simple).</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<recipeUsers>
			<li>VCE_SushiPrepTable</li>	
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>VCEF_RawFishCategory</li>
					</categories>
				</filter>
				<count>0.20</count>
			</li>
		</ingredients>
		<products>
			<VCESS_Sashimi>1</VCESS_Sashimi>
		</products>		
	</RecipeDef>

    <!-- 4x Recipe (simple) -->
    	<RecipeDef ParentName="VCE_CookSushiMealBase">
		<defName>VCESS_CookSashimiSimpleBulk</defName>
		<label>make sashimi (simple) x4</label>
		<description>Make 4 servings of Sashimi quickly prepared from choice fish.</description>
