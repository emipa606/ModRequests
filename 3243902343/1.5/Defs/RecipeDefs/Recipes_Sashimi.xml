		<ingredients>
			<li>
				<filter>
					<categories>
						<li>VCEF_RawFishCategory</li>
					</categories>
				</filter>
				<count>0.4</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>VCE_WasabiPaste</li>
