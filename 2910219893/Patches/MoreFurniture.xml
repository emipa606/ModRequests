<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    	<success>Always</success>
		<mods>
        	<li>More Furniture [1.1]</li>
        </mods>
        <match Class="PatchOperationSequence">
  		<operations>
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
				<value>
				 	<TerrainDef ParentName="Underlay_Carpet">
                        <defName>CarpetBedGreenArmored</defName>
                        <label>armored bed green carpet</label>
                        <renderPrecedence>195</renderPrecedence>
                        <description>A faded green carpet to match a bed with armored underlay.</description>
                        <color>(76,114,90)</color>
					</TerrainDef>
  			 	</value>
			</li>
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
				<value>
				 	<TerrainDef ParentName="Underlay_Carpet">
    					<defName>CarpetBedOrangeArmored</defName>
    					<label>armored bed orange carpet</label>
    					<renderPrecedence>194</renderPrecedence>
						<description>A dull orange carpet to match a bed with armored underlay.</description>
						<color>(145,94,0)</color>
					</TerrainDef>
  			 	</value>
			</li>
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
				<value>
				 	<TerrainDef ParentName="Underlay_Carpet">
                        <defName>CarpetBedBlueArmored</defName>
                        <label>armored bed blue carpet</label>
                        <renderPrecedence>193</renderPrecedence>
                        <description>A relaxing blue carpet to match a bed with armored underlay.</description>
                        <color>(41,82,129)</color>
					</TerrainDef>
  			 	</value>
			</li>
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
				<value>
				 	<TerrainDef ParentName="Underlay_Carpet">
    					<defName>CarpetBedMaroonArmored</defName>
    					<label>armored bed maroon carpet</label>
    					<renderPrecedence>192</renderPrecedence>
						<description>A maroon carpet to match a bed with armored underlay.</description>
						<color>(94,45,9)</color>
					</TerrainDef>
  			 	</value>
			</li>
			</operations>
		</match>
    </Operation>
</Patch>
