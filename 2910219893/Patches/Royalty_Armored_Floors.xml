<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    	<success>Always</success>
		<mods>
        	<li>Royalty</li>
        </mods>
        <match Class="PatchOperationSequence">
  		<operations>
  			<!-- Fine Carpet -->
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
				<value>
					<TerrainDef Name="Underlay_CarpetFineBase" ParentName="Underlay_Armor" Abstract="True">
						<texturePath>Terrain/Surfaces/CarpetFine</texturePath>
						<researchPrerequisites><li>CarpetMaking</li></researchPrerequisites>
						<burnedDef>BurnedCarpet</burnedDef>
						<costList>
							<Cloth>35</Cloth>
						</costList>
						<designatorDropdown>Floor_Carpet_Fine</designatorDropdown>
						<statBases>
							<Beauty>4</Beauty>
							<Flammability>0.32</Flammability>
							<WorkToBuild>5000</WorkToBuild>
						</statBases>
						<tags>
							<li>FineFloor</li>
						</tags>
						<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
					</TerrainDef>
  			 	</value>
			</li>
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
			   	<value>
			   		<TerrainDef ParentName="Underlay_CarpetFineBase">
    					<defName>CarpetFineBurgundyArmored</defName>
					    <label>armored fine burgundy carpet</label>
					    <renderPrecedence>200</renderPrecedence>
					    <description>Classic burgundy carpet for that classic rich look with armored underlay.</description>
					    <color>(91,41,45)</color>
					</TerrainDef>
			 	</value>
             </li>
             <li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
			   	<value>
					<TerrainDef ParentName="Underlay_CarpetFineBase">
						<defName>CarpetFineIndigoArmored</defName>
						<label>armored fine indigo carpet</label>
						<renderPrecedence>199</renderPrecedence>
						<description>Soft and silky indigo carpet, for that extra sense of pomp with armored underlay.</description>
						<color>(125,73,125)</color>
					</TerrainDef>
			 	</value>
             </li>
             <li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
		   		<value>
					<TerrainDef ParentName="Underlay_CarpetFineBase">
						<defName>CarpetFineWhiteArmored</defName>
						<label>armored fine white carpet</label>
						<renderPrecedence>198</renderPrecedence>
						<description>Sublime white carpet, glimmering with subtle patterns with armored underlay.</description>
	    				<color>(0.65,0.65,0.65)</color>
					</TerrainDef>
				</value>
			</li>
			<!-- Fine Tile -->
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
				<value>
					<TerrainDef Abstract="True" ParentName="Underlay_Armor" Name="Underlay_FineTileStoneBase">
						<renderPrecedence>220</renderPrecedence>
						<description>Exquisite stone tiles, made with no compromises, for expressing economic status. Slow to construct.</description>
						<texturePath>Terrain/Surfaces/TileStoneFine</texturePath>
						<statBases>
							<WorkToBuild>6000</WorkToBuild>
							<Beauty>3</Beauty>
						</statBases>
						<designatorDropdown>Floor_Tile_Fine</designatorDropdown>
						<researchPrerequisites>
							<li>Stonecutting</li>
						</researchPrerequisites>
						<tags>
							<li>FineFloor</li>
						</tags>
						<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
					</TerrainDef>
  			 	</value>
			</li>
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
		   		<value>
					<TerrainDef ParentName="Underlay_FineTileStoneBase">
						<defName>FineTileSandstoneArmored</defName>
						<label>armored fine sandstone tile</label>
						<color>(147,127,118)</color>
						<costList>
							<BlocksSandstone>20</BlocksSandstone>
						</costList>
					</TerrainDef>
				</value>
			</li>
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
		   		<value>
					<TerrainDef ParentName="Underlay_FineTileStoneBase">
						<defName>FineTileGraniteArmored</defName>
						<label>armored fine granite tile</label>
						<color>(105,95,97)</color>
						<costList>
							<BlocksGranite>20</BlocksGranite>
						</costList>
					</TerrainDef>
				</value>
			</li>
			<li Class="PatchOperationAdd">
             	<xpath>/Defs</xpath>
		   		<value>
					<TerrainDef ParentName="Underlay_FineTileStoneBase">
