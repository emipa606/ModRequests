<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RiverDef>
    <defName>AmazonianRiver</defName>
    <label>amazonian river</label>
    <spawnFlowThreshold>5000000</spawnFlowThreshold>
    <spawnChance>1</spawnChance>
    <degradeThreshold>2500000</degradeThreshold>
    <degradeChild>HugeRiver</degradeChild>
    <branches>
      <li>
        <minFlow>3500000</minFlow>
        <child>AmazonianRiver</child>
        <chance>0.6</chance>
      </li>
      <li>
        <minFlow>1750000</minFlow>
        <child>HugeRiver</child>
        <chance>0.3</chance>
      </li>
      <li>
        <minFlow>125000</minFlow>
        <child>LargeRiver</child>
        <chance>0.3</chance>
      </li>
    </branches>
    <widthOnWorld>1.2</widthOnWorld>
    <widthOnMap>120</widthOnMap>
    <debugOpacity>0.9</debugOpacity>
  </RiverDef>

</Defs>
