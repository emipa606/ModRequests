<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Apparel_EltexSkullcap"]/apparel</xpath>
        <value>
            <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Apparel_Coronet"]/apparel</xpath>
        <value>
            <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Apparel_Crown"]/apparel</xpath>
        <value>
            <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Apparel_EltexSkullcap"]/apparel/wornGraphicPath</xpath>
        <value>
            <wornGraphicPath>EltexCirclets/EltexCirclet</wornGraphicPath>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Apparel_EltexSkullcap"]/graphicData/texPath</xpath>
        <value>
            <texPath>EltexCirclets/EltexCirclet</texPath>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Apparel_EltexSkullcap"]/label</xpath>
        <value>
            <label>eltex circlet</label>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Apparel_EltexSkullcap"]/description</xpath>
        <value>
            <description>A tight circlet designed for psychic focusing. It provides no physical protection, but its special materials enhance the wearer's psychic sensitivity and dissipate neural heat.</description>
        </value>
    </Operation>

</Patch>
