<Defs>

<!-- Rifle -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_ChargeRifleAdv</defName>
    <label>Charge Rifel Advanced</label>
    <description>When the capabilities of a standard Energy Rifle begin to be lacking. The armor penetration is higher, the bullet is faster, the kinetic energy is greater. It's just better than its original version in every way.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ChargeRifleAdv</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>65000</WorkToMake>
      <Mass>4.0</Mass>
      <AccuracyTouch>0.64</AccuracyTouch>
      <AccuracyShort>0.73</AccuracyShort>
      <AccuracyMedium>0.64</AccuracyMedium>
      <AccuracyLong>0.53</AccuracyLong>
      <RangedWeapon_Cooldown>2.00</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>AdvancedWeapon</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
	  <Gun_ChargeRifle>1</Gun_ChargeRifle>
	  <Steel>50</Steel>
      <Plasteel>75</Plasteel>
      <Uranium>25</Uranium>
	  <ComponentIndustrial>8</ComponentIndustrial>
      <ComponentSpacer>3</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BulletChargeRifelAdv</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>27.5</range>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>4</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
