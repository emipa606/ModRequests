<!-- GLADIUS -->

 <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MW_GladiusComp</defName>
    <label>Composite Gladius</label>
    <description>Standard gladius, with a more comfortable handle and a light blade made of plasteel.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/GladiusComp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.2</uiIconScale>
	<techLevel>Spacer</techLevel>
	<costList>
	  <MeleeWeapon_Gladius>1</MeleeWeapon_Gladius>
	  <Steel>20</Steel>
	  <Plasteel>30</Plasteel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <Mass>0.80</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
		<armorPenetration>0.15</armorPenetration>
        <cooldownTime>1.9</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>19</power>
		<armorPenetration>0.26</armorPenetration>
        <cooldownTime>1.9</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>19</power>
		<armorPenetration>0.26</armorPenetration>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>CompositeMeleeWeapon</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
 
