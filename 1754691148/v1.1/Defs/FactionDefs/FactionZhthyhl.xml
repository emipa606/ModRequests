<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
    <defName>ZhthyhlSummoned</defName>
    <label>ravaging daemons</label>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>ravaging daemons</fixedName>
    <pawnSingular>ravager</pawnSingular>
    <pawnsPlural>ravagers</pawnsPlural>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <backstoryCategories>
      <li>Zhthyhl</li>
    </backstoryCategories>
    <canMakeRandomly>false</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>true</hidden>
    <rescueesCanJoin>true</rescueesCanJoin>
    <autoFlee>true</autoFlee>
    <canUseAvoidGrid>false</canUseAvoidGrid>
    <techLevel>Neolithic</techLevel>
    <permanentEnemy>true</permanentEnemy>
    <allowedArrivalTemperatureRange>0~45</allowedArrivalTemperatureRange>
    <pawnGroupMakers>
      <li>
        <!-- All types-->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <ZhthyhlMelee>60</ZhthyhlMelee>
          <ZhthyhlArcher>20</ZhthyhlArcher>
          <ZhthyhlMid>20</ZhthyhlMid>
          <BaalrukhBound>0.1</BaalrukhBound>
        </options>
      </li>
      <li>
        <!-- Ranged only -->
        <kindDef>Combat</kindDef>
        <commonality>25</commonality>
        <options>
          <ZhthyhlArcher>90</ZhthyhlArcher>
          <BaalrukhBound>0.1</BaalrukhBound>
        </options>
      </li>
      <li>
        <!-- Melee only-->
        <kindDef>Combat</kindDef>
        <commonality>40</commonality>
        <options>
          <ZhthyhlMelee>70</ZhthyhlMelee>
          <ZhthyhlMid>30</ZhthyhlMid>
          <BaalrukhBound>0.1</BaalrukhBound>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>

</Defs>
