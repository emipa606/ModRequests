  <ThingDef ParentName="ZhthyhlAnimalThingBase">
    <defName>ZhthyhlBaalrukh</defName>
    <label>Baalrukh</label>
    <description>Baalrukh a greater daemon distinguished for its affinity for fire. Like most Greater Daemons, they regard themselves as the nobility of the daemonic planes. Every Baalrukh will claim to be the prince of all Baalrûkhs, or some other spurious title.</description>
    <statBases>
      <MoveSpeed>4</MoveSpeed>
      <MarketValue>2500</MarketValue>
      <ComfyTemperatureMin>-20</ComfyTemperatureMin>
      <Flammability>0</Flammability>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>18</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>18</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>horn</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>23</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>BaalrukhHornTool</linkedBodyPartsGroup>
      </li>
    </tools>
    <race>
      <useMeatFrom>Alien_Zhthyhl</useMeatFrom>
      <body>Baalrukh</body>
      <baseHungerRate>2.0</baseHungerRate>
      <baseBodySize>4.0</baseBodySize>
      <baseHealthScale>3.2</baseHealthScale>
      <foodType>OmnivoreHuman</foodType>
      <leatherDef>Leather_Heavy</leatherDef>
      <gestationPeriodDays>55</gestationPeriodDays>
      <wildness>1</wildness>
      <trainability>Advanced</trainability>
      <nuzzleMtbHours>500</nuzzleMtbHours>
      <lifeExpectancy>9000</lifeExpectancy>
      <manhunterOnTameFailChance>1</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>1.0</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>3.0</minAge>
          <soundWounded>Pawn_Thrumbo_Pain</soundWounded>
          <soundDeath>Pawn_Thrumbo_Death</soundDeath>
          <soundCall>Pawn_Thrumbo_Call</soundCall>
          <soundAngry>Pawn_Thrumbo_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
