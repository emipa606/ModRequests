<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Adulthood -->

  <AlienRace.BackstoryDef>
    <defName>ZhthyhlHunter</defName>
    <title>hunter</title>
    <titleShort>hunter</titleShort>
    <baseDescription>[PAWN_nameDef] often moves about in the wilderness. Tracking [PAWN_possessive] pray and taming beasts.</baseDescription>

    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>

    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Animals</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>3</amount>
      </li>
    </skillGains>
    <forcedTraits>
      <li>
        <defName>Nimble</defName>
        <chance>5</chance>
      </li>
    </forcedTraits>
    <spawnCategories>
      <li>Zhthyhl</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
      <li>Animals</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>ZhthyhlRaider</defName>
    <title>raider</title>
    <titleShort>raider</titleShort>
    <baseDescription>[PAWN_nameDef] is often part of raids, launched by the Zhthy'hl against nearby settlements and camps.</baseDescription>

    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>

    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <forcedTraits>
      <li>
        <defName>Nimble</defName>
        <chance>5</chance>
      </li>
      <li>
        <defName>Tough</defName>
        <chance>5</chance>
      </li>
    </forcedTraits>
    <workDisables>
      <li>Caring</li>
    </workDisables>
    <spawnCategories>
      <li>Zhthyhl</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </AlienRace.BackstoryDef>

