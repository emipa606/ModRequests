<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef ParentName="MediumMechanoidRecipe">
    <defName>Arachnid</defName>
    <label>gestate arachnid</label>
    <description>Gestate an arachnid mechanoid.</description>
    <researchPrerequisite>HighMechtech</researchPrerequisite>
    <ingredients Inherit="False">
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SubcoreRegular</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Mech_Arachnid>1</Mech_Arachnid>
    </products>
    <descriptionHyperlinks>
      <ThingDef>Mech_Arachnid</ThingDef>
    </descriptionHyperlinks>
	<recipeUsers>
		<li>LargeMechGestator</li>
	</recipeUsers>
  </RecipeDef>
  <RecipeDef ParentName="MediumMechanoidRecipe">
    <defName>ArachnidFromSpiderling</defName>
    <label>gestate arachnid from spiderling </label>
    <description>Gestate an arachnid mechanoid from a spiderling corpse.</description>
	<gestationCycles>1</gestationCycles>
    <researchPrerequisite>HighMechtech</researchPrerequisite>
    <ingredients Inherit="False">
		<li>
			<filter>
				<categories>
					<li>Corpses</li>
				</categories>
			</filter>
			<count>1</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>Plasteel</li>
				</thingDefs>
			</filter>
			<count>40</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>ComponentIndustrial</li>
				</thingDefs>
			</filter>
			<count>2</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>SubcoreRegular</li>
				</thingDefs>
			</filter>
			<count>1</count>
		</li>
	</ingredients>
    <fixedIngredientFilter>
        <thingDefs>
			<li>Corpse_Mech_Spiderling</li>
        </thingDefs>
		<specialFiltersToAllow>
			<li>AllowCorpsesMechFriendly</li>
		</specialFiltersToAllow>
    </fixedIngredientFilter>
	<forceHiddenSpecialFilters>
		<li>AllowCorpsesMechFriendly</li>
	</forceHiddenSpecialFilters>
    <products>
		<Mech_Arachnid>1</Mech_Arachnid>
    </products>
    <descriptionHyperlinks>
		<ThingDef>Mech_Arachnid</ThingDef>
    </descriptionHyperlinks>
	<recipeUsers>
		<li>LargeMechGestator</li>
	</recipeUsers>
  </RecipeDef>
</Defs>