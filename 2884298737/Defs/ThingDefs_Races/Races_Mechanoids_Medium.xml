<?xml version="1.0" encoding="UTF-8"?>
<Defs>
		<!--Arachnid-->
	<ThingDef ParentName="BaseMechanoidWalker">
		<defName>Mech_Arachnid</defName>
		<label>arachnid</label>
		<description>A spider-like mechanoid that utilizes poisonous ranged and melee attacks. If an enemy gets too close, the arachnid can release toxic gas in attempt to repel them, and does so uncontrollably when it dies.\n\nThis mechanoid stores the toxic waste it produces for use in its weapons, so it generates less wastepacks per recharge.</description>
		<statBases>
			<MoveSpeed>4</MoveSpeed>
			<WastepacksPerRecharge>2</WastepacksPerRecharge>
			<BandwidthCost>3</BandwidthCost>
		</statBases>
		<tools>
			<li>
				<label>venom-fangs</label>
				<capacities>
					<li>ToxicBite</li>
				</capacities>
				<power>14</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
			</li>
		</tools>
		<race>
			<body>Arachnid</body>
			<lifeStageAges Inherit="False">
				<li>
					<def>MechanoidFullyFormed</def>
					<minAge>0</minAge>
					<soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
					<soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
					<soundCall>Pawn_Mech_Scyther_Call</soundCall>
				</li>
				<li>
					<def>MechanoidFullyFormed</def>
					<minAge>100</minAge>
					<soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
					<soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
					<soundCall>Pawn_Mech_Scyther_Call</soundCall>
				</li>
			</lifeStageAges>
			<baseHealthScale>1</baseHealthScale>
			<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
			<deathActionWorkerClass>DeathActionWorker_ToxCloud</deathActionWorkerClass>
		</race>
	</ThingDef>
	<PawnKindDef ParentName="BaseMechanoidKind">
		<defName>Mech_Arachnid</defName>
		<label>arachnid</label>
		<race>Mech_Arachnid</race>
		<combatPower>150</combatPower>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/Arachnid</texPath>
					<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Arachnid</maskPath>
					<shaderType>CutoutWithOverlay</shaderType>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>1.8</drawSize>
				</bodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/ArachnidAncient</texPath>
					<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Arachnid</maskPath>
					<shaderType>CutoutWithOverlay</shaderType>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>1.8</drawSize>
				</bodyGraphicData>
			</li>
		</lifeStages>
		<techHediffsChance>1</techHediffsChance>
		<techHediffsMoney>9999~9999</techHediffsMoney>
		<weaponMoney>9999~9999</weaponMoney>
		<weaponTags>
			<li>MechanoidGunToxicNeedle</li>
		</weaponTags>
		<abilities>
			<li>SpreadGas</li>
		</abilities>
	</PawnKindDef>
</Defs>