<?xml version="1.0" encoding="utf-8"?>

<Defs>
<ThingDef Name="CannonBaseArtilleryBuilding" ParentName="BuildingBase" Abstract="True">
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Weapon/CannonMount</texPath>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.38,0.2,0.56375,0.8)</rect>
        <cornerTL>Damage/Corner</cornerTL>
      </damageData>
      <shadowData>
        <offset>(-0.13,-0.87,-0.1)</offset>
        <volume>(0.5,0.4,1.05)</volume>
      </shadowData>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <stealable>false</stealable>
    <size>(1,1)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <stuffCategories>
      <li>Metallic</li>
	  <li>Woody</li>
    </stuffCategories>
    <tickerType>Normal</tickerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <costStuffCount>80</costStuffCount>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
    <costList>
      <Steel>155</Steel>
    </costList>
    <inspectorTabs>
      <li>ITab_Shells</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>8000</WorkToBuild>
      <Mass>45</Mass>
      <Beauty>-20</Beauty>
    </statBases>
    <building>
      <turretBurstWarmupTime>4</turretBurstWarmupTime>
      <turretBurstCooldownTime>15.0</turretBurstCooldownTime>
    </building>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Smithing</li>
    </researchPrerequisites>
    <uiIconScale>1.1</uiIconScale>
  </ThingDef>
  <ThingDef ParentName="CannonBaseArtilleryBuilding">
    <defName>Turret_ThogsCannon</defName>
    <label>cannon</label>
    <description>An old-school black powder cannon that can fire a variety of different types of specialized shot. While less powerful than modern alternatives, it is nonetheless a viable direct fire support weapon.</description>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>350</wickTicks>
        <explosiveRadius>3.5</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
    </comps>
    <designationHotKey>Misc4</designationHotKey>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <building>
      <turretGunDef>Artillery_ThogsCannon</turretGunDef>
    </building>
  <uiIconPath>Weapon/CannonUI</uiIconPath>
  <uiIconScale>0.9</uiIconScale>
  </ThingDef>

  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>Artillery_ThogsCannon</defName>
    <label>cannon</label>
    <description>An Archaic mortar launcher. Lobs old-school bombs over walls. Very, very inaccurate but long-ranged.</description>
    <recoilPower>2</recoilPower>
    <graphicData>
      <texPath>Weapon/CannonTop</texPath>
    </graphicData>
    <weaponTags>
      <li>Artillery_BaseDestroyer</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <forceNormalTimeSpeed>true</forceNormalTimeSpeed>
        <warmupTime>4.0</warmupTime>
        <forcedMissRadius>4</forcedMissRadius>
        <minRange>6.9</minRange>
        <range>60</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Mortar_LaunchA</soundCast>
        <muzzleFlashScale>13</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_ChangeableProjectile" />
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
			<thingDefs>
				<li>Shell_ThogsCannonball</li>
				<li>Shell_ThogsCannonballChain</li>
				<li>Shell_ThogsClustershot</li>
				<li>Shell_ThogsIncendiaryCannonball</li>
			</thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
			<thingDefs>
				<li>Shell_ThogsCannonball</li>
				<li>Shell_ThogsCannonballChain</li>
				<li>Shell_ThogsClustershot</li>
				<li>Shell_ThogsIncendiaryCannonball</li>
			</thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
</Defs>

