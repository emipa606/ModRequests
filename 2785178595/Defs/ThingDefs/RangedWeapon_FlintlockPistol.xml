<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseBullet">
    <defName>Bullet_FlintlockPistol</defName>
    <label>flintlock pistol bullet</label>
    <graphicData>
      <texPath>Weapon/LeadBall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>20</damageAmountBase>
      <stoppingPower>2</stoppingPower>
	  <armorPenetrationBase>0.2</armorPenetrationBase>
      <speed>48</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_FlintlockPistol</defName>
    <label>flintlock pistol</label>
    <description>An ancient and archaic pistol. It packs a hell of a punch, but is very innacurate and fairly slow to load, aim and fire.</description>
    <graphicData>
      <texPath>Weapon/FlintlockPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>Interact_Revolver</soundInteract>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>3500</WorkToMake>
      <Mass>2.2</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.46</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>4.5</RangedWeapon_Cooldown>
    </statBases>
	<weaponTags>
	  <li>SimpleGun</li>
	  <li>NeolithicRangedChief</li>
	  <li>NeolithicRangedHeavy</li>
	  <li>MedievalRanged</li>
    </weaponTags>
    <costList>
	  <WoodLog>15</WoodLog>
      <Steel>20</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
	  <recipeUsers>
	    <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Smithing</researchPrerequisite>	  
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>SmokingGun.Verb_ShootWithSmoke</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_FlintlockPistol</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>16.9</range>
        <soundCast>Shot_HeavySMG</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>20</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
 </Defs>