<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_FlintlockShotgun</defName>
    <label>flintlock shotgun</label>
    <description>An ancient and archaic firearm which fires an immense quantity of scrap metal, stone or wooden pellets with a charge of gunpowder. Devastating in close quarters, but very slow to load and fire, and quite innacurate. Its crude ammunition and complete lack of bore sizing means that rather than firing tight groups of shot, this gun fires a spray of loose, low-damage pellets.</description>
    <graphicData>
      <texPath>Weapon/FlintlockShotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <WorkToMake>7500</WorkToMake>
      <Mass>5.2</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.52</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.16</AccuracyLong>
      <RangedWeapon_Cooldown>5.5</RangedWeapon_Cooldown>
    </statBases>
	<weaponTags>
	  <li>SimpleGun</li>
	  <li>NeolithicRangedHeavy</li>
	  <li>MedievalRangedHeavy</li>
	  <li>MedievalRanged</li>
    </weaponTags>
    <costList>
	  <WoodLog>20</WoodLog>
      <Steel>50</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
	  <recipeUsers>
	    <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Smithing</researchPrerequisite>	  
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>SmokingGun.Verb_ShootWithSmoke</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_FlintlockShotgun</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>11.9</range>
		<burstShotCount>7</burstShotCount>
        <ticksBetweenBurstShots>0</ticksBetweenBurstShots>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>1</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_FlintlockShotgun</defName>
    <label>flintlock shotgun blast</label>
    <graphicData>
      <texPath>Weapon/LeadBallTiny</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>4</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <armorPenetrationBase>0.1</armorPenetrationBase>
      <speed>46</speed>
    </projectile>
  </ThingDef>
 </Defs>