<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="ArmorSmithableBase">
        <defName>TRAHS_Apparel_SilverArmor</defName>
        <label>silver armor</label>
        <description>Silvery armor with armor plates covering both shoulders and the chest. Effective at withstanding most forms of damage. The cape provides a small insulation towards the cold.</description>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
          <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
          <skillRequirements>
            <Crafting>4</Crafting>
          </skillRequirements>
        </recipeMaker>
        <graphicData>
          <texPath>TRAHS/Things/Pawn/Humanlike/Apparel/SilverArmor/SilverArmor</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>1.00</drawSize>
        </graphicData>
        <statBases>
          <WorkToMake>12000</WorkToMake>
          <MaxHitPoints>300</MaxHitPoints>
          <Mass>4</Mass>
          <Flammability>0.7</Flammability>
          <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
          <ArmorRating_Heat>0.10</ArmorRating_Heat>
          <Insulation_Cold>3</Insulation_Cold>
          <EquipDelay>7</EquipDelay>
        </statBases>
        <equippedStatOffsets>
          <MoveSpeed>-0.04</MoveSpeed>
        </equippedStatOffsets>
        <thingCategories>
          <li>ApparelArmor</li>
        </thingCategories>
        <costList>
          <Cloth>45</Cloth>
          <Steel>30</Steel>
          <Silver>60</Silver>
        </costList>
        <apparel>
          <bodyPartGroups>
            <li>Torso</li>
            <li>Neck</li>
            <li>Shoulders</li>
            <li>Arms</li>
            <li>Legs</li>
            <li>Hands</li>
            <li>Feet</li>
          </bodyPartGroups>
          <wornGraphicPath>TRAHS/Things/Pawn/Humanlike/Apparel/SilverArmor/SilverArmor</wornGraphicPath>
          <layers>
            <li>Shell</li>
          </layers>
        </apparel>
      </ThingDef>

</Defs>