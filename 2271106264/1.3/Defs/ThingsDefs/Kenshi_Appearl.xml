<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Iron Hat -->
	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>Kenshi_IronHat</defName>
		<label>Iron Hat</label>
		<description>Some crazy dude at some point must have thought "I like hats, but I don't like helmets, but I also like having a sword-resistant head...". Now we have iron hats.</description>
		<techLevel>Medieval</techLevel>
		<recipeMaker>
			<recipeUsers Inherit="false">
				<li>KenshiSmithingTable</li>
				<li>KenshiElectricSmithingTable</li>
			</recipeUsers>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Armor/Appearl/Iron Hat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.2</uiIconScale>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<MaxHitPoints>180</MaxHitPoints>
			<Mass>1.4</Mass>
			<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Heat>0.2</ArmorRating_Heat>
			<Insulation_Heat>9</Insulation_Heat>
			<EquipDelay>1.6</EquipDelay>
		</statBases>
		<costList>
			<Steel>40</Steel>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Armor/Appearl/Iron Hat</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255,255,255,255)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
