<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Backgrounds Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
                        <VBE.BackgroundImageDef>
                            <label>Blighted Planet</label>
                            <description>A destroyed blighted planet. Background art for Blight Weaponry.</description>
                            <defName>Van_Blight</defName>
                            <path>BlightBackground</path>
                        </VBE.BackgroundImageDef>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
                        <VBE.BackgroundImageDef>
                            <label>Archotech  Plains</label>
                            <description>Windy Archotech plains.</description>
                            <defName>Van_ATPlains</defName>
                            <path>ArchotechPlainsBackground</path>
                        </VBE.BackgroundImageDef>
					</value>
				</li>
								<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
                        <VBE.BackgroundImageDef>
                            <label>Dead World</label>
                            <description>A world stripped of all its life by a planet-killer.</description>
                            <defName>Van_DeadWorld</defName>
                            <path>DeadWorldBackground</path>
                        </VBE.BackgroundImageDef>
					</value>
				</li>
								<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
                        <VBE.BackgroundImageDef>
                            <label>Eltex Nebula</label>
                            <description>A beautiful blue nebula. Background art for Eltex Weaponry.</description>
                            <defName>Van_EltexNebula</defName>
                            <path>EltexNebulaBackground</path>
                        </VBE.BackgroundImageDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>