<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="AstroMechanoid" ParentName="BaseMechanoid" Abstract="True">
    <statBases>
      <MoveSpeed>4</MoveSpeed>
      <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.40</ArmorRating_Sharp>
      <ControlTakingTime>24</ControlTakingTime>
      <MechEnergyLossPerHP>0.25</MechEnergyLossPerHP>
    </statBases>

    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <mechWeightClass>Medium</mechWeightClass>
    </race>
    <butcherProducts>
      <Steel>20</Steel>
      <Plasteel>10</Plasteel>
    </butcherProducts>
  </ThingDef>
  
    <PawnKindDef Name="AstroMechanoidKind" ParentName="BaseMechanoidKind" Abstract="True">
    <weaponMoney>9999~9999</weaponMoney>
    <combatPower>85</combatPower>
    <weaponTags></weaponTags>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>9999~9999</techHediffsMoney>
    <controlGroupPortraitZoom>1.2</controlGroupPortraitZoom>
  </PawnKindDef>
  
    <!-- Astrorepairer -->  
    <ThingDef ParentName="AstroMechanoid">
      <defName>Mech_Astrorepair</defName>
      <label>Astrorepairer</label>
      <description>An advanced building mechanoid designed to perform repairs at mechanoid ships. It can perform melee attacks with its strengthened claw and work in firefighting tasks if necessary.</description>
      <statBases>
        <ConstructionSpeed>1</ConstructionSpeed>
		<BandwidthCost>5</BandwidthCost>
        <WorkSpeedGlobal>1.5</WorkSpeedGlobal>
      </statBases>
      <race>
		<body>Mech_Astrorepair</body>
        <mechEnabledWorkTypes>
          <li>Construction</li>
          <li>Firefighter</li>
        </mechEnabledWorkTypes>
		<mechFixedSkillLevel>18</mechFixedSkillLevel>
        <lifeStageAges>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>0</minAge>
            <soundWounded>Pawn_Mech_Astrorepairer_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_Astrorepairer_Death</soundDeath>
            <soundCall>Pawn_Mech_Astrorepairer_Call</soundCall>
          </li>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>100</minAge>
            <soundWounded>Pawn_Mech_Astrorepairer_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_Astrorepairer_Death</soundDeath>
            <soundCall>Pawn_Mech_Astrorepairer_Call</soundCall>
          </li>
        </lifeStageAges>
		<detritusLeavings>
		  <li>
			<def>ChunkMechanoidSlag</def>
			<texOverrideIndex>11</texOverrideIndex>
			<spawnChance>0.1</spawnChance>
		  </li>
		  <li>
			<def>ChunkMechanoidSlag</def>
			<texOverrideIndex>1</texOverrideIndex>
			<spawnChance>0.1</spawnChance>
		  </li>
		</detritusLeavings>
      </race>
    <tools>
      <li>
        <label>left manipulator</label>
        <labelNoLocation>manipulator</labelNoLocation>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>13</power>
        <cooldownTime>1.4</cooldownTime>
        <linkedBodyPartsGroup>LeftPowerClaw</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>right manipulator</label>
        <labelNoLocation>manipulator</labelNoLocation>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>13</power>
        <cooldownTime>1.4</cooldownTime>
        <linkedBodyPartsGroup>RightPowerClaw</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    </ThingDef>
    
    <PawnKindDef ParentName="AstroMechanoidKind">
      <defName>Mech_Astrorepair</defName>
      <label>Astrorepairer</label>
      <race>Mech_Astrorepair</race>
	  <allowInMechClusters>false</allowInMechClusters>
      <lifeStages>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/Mechanoid/Astrorepairer</texPath>
            <maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Astrorepairer</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>2</drawSize>
          </bodyGraphicData>
        </li>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/Mechanoid/AstrorepairerAncient</texPath>
            <maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Astrorepairer</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>2</drawSize>
          </bodyGraphicData>
        </li>
      </lifeStages>
      <abilities>
        <li>FirefoampopMech</li>
      </abilities>
    </PawnKindDef>

</Defs>