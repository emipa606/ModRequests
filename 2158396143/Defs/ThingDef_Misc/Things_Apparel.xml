<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_PilotHelmet</defName>
    <label>Pilot Helmet</label>
    <description>A bulletproof flight helmet designed for use by military helicopter crews.  Slightly heavier than a regular flak helmet, but provides full face protection.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>RimHeliHuey</researchPrerequisite>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/Headgear/PilotHelmet/pilot_helmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <ComponentIndustrial>3</ComponentIndustrial>
      <Plasteel>10</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Headgear/PilotHelmet/pilot_helmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.43,0.47,0.31,1)</only> <!-- Olive Drab -->
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  
</Defs>