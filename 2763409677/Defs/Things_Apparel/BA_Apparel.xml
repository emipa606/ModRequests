<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--Shell Layer-->
  <ThingDef ParentName="ApparelMakeableBase">
		<defName>BA_Chestplate</defName>
		<label>chestplate</label>
		<description>An armour that only covers chest but provide a flexible space to wearer</description>
		<graphicData>
			<texPath>Things/Apparel/ChestPlate/ChestPlate</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>1</generateCommonality>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>6.5</Mass>
			<StuffEffectMultiplierArmor>0.75</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
    <thingCategories Inherit='False'>
      <li>ApparelArmor</li>
    </thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/ChestPlate/ChestPlate</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
	
