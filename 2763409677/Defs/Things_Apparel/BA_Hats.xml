<Defs>
	
	<ThingDef ParentName="HatMakeableBase">
		<defName>BA_Morion</defName>
		<label>Morion</label>
		<description>An helmet which was weared by soldiers in acient times,commonly for musketeers.</description>
		<graphicData>
			<texPath>Things/Apparel/Morion/Morion</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.5</generateCommonality>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>125</MaxHitPoints>
			<WorkToMake>600</WorkToMake>
			<Mass>2.8</Mass>
			<StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>2.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.3</ShootingAccuracyPawn>
		</equippedStatOffsets>
    <thingCategories Inherit='False'>
      <li>ArmorHeadgear</li>
    </thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Morion/Morion</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

