<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseGas">
    <defName>Musket_Smoke</defName>
    <label>smoke</label>
    <graphicData>
      <texPath>Things/Gas/Puff</texPath>
      <drawSize>2.8</drawSize>
      <color>(1.0,1.0,1.0,0.8)</color>
    </graphicData>
    <gas>
      <expireSeconds>2~5</expireSeconds>
      <blockTurretTracking>true</blockTurretTracking>
      <accuracyPenalty>0.05</accuracyPenalty>
      <rotationSpeed>20</rotationSpeed>
    </gas>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>BA_Bullet_BasicRound</defName>
    <label>lead round</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>16</damageAmountBase>
      <speed>55</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_BasicRound</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>BA_Bullet_BasicRoundPlus</defName>
    <label>lead round</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>40</damageAmountBase>
      <speed>65</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_BasicRound</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>BA_Bullet_SpreadRound</defName>
    <label>Small lead round</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>60</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_SpreadRound</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>BA_Bullet_HeavyRound</defName>
    <label>Heavy lead round</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>50</damageAmountBase>
      <speed>60</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_HeavyRound</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>BA_Bullet_HandMortar</defName>
    <label>Hand Mortar shell</label>
    <graphicData>
      <texPath>Things/Projectile/Projectile_Explosive</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>41</speed>
      <explosionRadius>1.5</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
</Defs>