<Defs>
  <!-- Hand Cannon -->
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>BA_Gun_HandGonne_R</defName>
    <label>Hand Gonne</label>
    <description>An early firearm that even don't have a trigger or stock,but hey it looks like a club and it can also act like a club.</description>
    <graphicData>
      <texPath>Things/Weapon/HandGonne_R</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.3</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <comps>
        <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
        </li>
        <li Class="BA_Class.RainFireOffShoot_CompProperties">
			<FireOffWeather>
			<li>Fog</li>		
			<li>Rain</li>
			<li>FoggyRain</li>	
			<li>RainyThunderstorm</li>
			<li>SnowHard</li>
			</FireOffWeather>
			<ThickCount>10</ThickCount>
			<Smoke>Musket_Smoke</Smoke>
        </li>
    </comps>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
    </statBases>
	<equippedAngleOffset>45</equippedAngleOffset>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
	  <li>NeolithicRangedChief</li>
    </weaponTags>
    <costList>
      <WoodLog>25</WoodLog>
	  <Steel>12</Steel>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
      <recipeUsers>
		<li>BA_FueledGunSmithy</li>
	  </recipeUsers>
	  <researchPrerequisite>BA_HandGonne</researchPrerequisite>
    </recipeMaker>

    <verbs>
      <li>
        <verbClass>BA_Class.Verb_RainFireOffShoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BA_Bullet_BasicRound</defaultProjectile>
        <warmupTime>0.8</warmupTime>
        <range>25.9</range>
        <soundCast>BA_Musket</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
	   <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15.7</power>
        <cooldownTime>1.5</cooldownTime>
	  </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>

