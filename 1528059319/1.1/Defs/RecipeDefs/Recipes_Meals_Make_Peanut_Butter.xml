<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="MakePeanutButter" ParentName="CookMealBase">
		<defName>MakePeanutButter</defName>
		<label>make peanut butter</label>
		<description>Crush peanuts into a delicious paste.</description>
		<jobString>Making peanut butter.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawPeanut</li>
					</thingDefs>
				</filter>
				<count>7.5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>PeanutOil</li>
					</thingDefs>
				</filter>
				<count>.1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawPeanut</li>
				<li>PeanutOil</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<PeanutButter>1</PeanutButter>
		</products>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

</Defs>