<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="ShellPeanuts" ParentName="CookMealBase">
		<defName>ShellPeanuts</defName>
		<label>shell peanuts</label>
		<description>Extract a raw peanut from its shell.</description>
		<jobString>Shelling a peanut.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Peanut</li>
					</thingDefs>
				</filter>
				<count>.05</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Peanut</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<RawPeanut>1</RawPeanut>
		</products>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

	<RecipeDef Name="BulkShellPeanuts" ParentName="CookMealBase">
		<defName>BulkShellPeanuts</defName>
		<label>bulk shell peanuts</label>
		<description>Extract lots of raw peanuts from their shells.</description>
		<jobString>Shelling peanuts.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Peanut</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Peanut</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<RawPeanut>20</RawPeanut>
		</products>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

</Defs>