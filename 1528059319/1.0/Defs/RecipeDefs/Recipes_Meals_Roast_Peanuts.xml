<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="RoastPeanuts" ParentName="CookMealBase">
		<defName>RoastPeanuts</defName>
		<label>roast peanuts</label>
		<description>Lightly roast peanuts to give them a pleasant taste and nice, brown color.</description>
		<jobString>Roasting a peanut.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawPeanut</li>
					</thingDefs>
				</filter>
				<count>.05</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawPeanut</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<RoastedPeanut>1</RoastedPeanut>
		</products>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

</Defs>