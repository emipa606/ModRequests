<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Itzal_RRL</defName>
    <label>Reloadable Rocket Launcher</label>
    <description>A rocket launcher of ancient design that, unlike others of its class, can be reloaded at the expense of decreased damage.</description>
<tickerType>Normal</tickerType>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>RRL</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
	<WorkToMake>50000</WorkToMake>
      <Mass>6.3</Mass>
      <RangedWeapon_Cooldown>4.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>Gun</li>
      <li>GunHeavy</li>
    </weaponTags>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>12</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_RRL</defaultProjectile>
		<forcedMissRadius>0.9</forcedMissRadius>
        <warmupTime>3.3</warmupTime>
		<ai_AvoidFriendlyFireRadius>2</ai_AvoidFriendlyFireRadius>
        <range>32.9</range>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>4</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>15</power>
        <cooldownTime>4</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_RRL</defName>
    <label>Reloadable Rocket</label>
    <graphicData>
      <texPath>Things/Projectile/Rocket_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	<shaderType>TransparentPostLight</shaderType>
	</graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
	  <damageAmountBase>45</damageAmountBase>
      <explosionRadius>2.9</explosionRadius>
      <speed>55</speed>
    </projectile>
  </ThingDef>

</Defs>