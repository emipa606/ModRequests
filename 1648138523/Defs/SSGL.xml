<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Itzal_SSGL</defName>
    <label>Single Shot Grenade Launcher</label>
    <description>A single-shot, reloadable grenade launcher whose projectiles explode on contact. Very small and lightweight.</description>
<tickerType>Normal</tickerType>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>M320</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
		    <statBases>
	<WorkToMake>50000</WorkToMake>
      <Mass>6.3</Mass>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>Gun</li>
      <li>GunHeavy</li>
    </weaponTags>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SSGL</defaultProjectile>
		<forcedMissRadius>0.9</forcedMissRadius>
        <warmupTime>2.3</warmupTime>
		<ai_AvoidFriendlyFireRadius>2</ai_AvoidFriendlyFireRadius>
        <range>22.9</range>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SSGL</defName>
    <label>Launched Grenade</label>
    <graphicData>
      <texPath>Things/Projectile/Grenade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	<shaderType>TransparentPostLight</shaderType>
	</graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
	  <damageAmountBase>40</damageAmountBase>
      <explosionRadius>1.5</explosionRadius>
      <speed>35</speed>
    </projectile>
  </ThingDef>

</Defs>