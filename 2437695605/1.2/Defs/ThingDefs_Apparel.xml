<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<!-- Bossk Apparel -->

  <ThingDef ParentName="ApparelMakeableBase">
		<defName>SW_Zuckuss_Apparel</defName>
		<label>Bossk Suit</label>
		<description>"Zuckuss wore a gas mask respirator connected to breather packs to breathe ammonia in oxygen-rich atmospheres. He wore heavy battle armor under his beige findsman body cloak."</description>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>
	<graphicData>
      <texPath>Apparel/Zuckuss_Apparel_UI</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
		<WorkToMake>10000</WorkToMake>
		<MaxHitPoints>300</MaxHitPoints>
		<Mass>10.5</Mass>
		<ArmorRating_Sharp>0.85</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.60</ArmorRating_Blunt>
		<ArmorRating_Heat>1.0</ArmorRating_Heat>
		<Insulation_Cold>30</Insulation_Cold>
		<Insulation_Heat>40</Insulation_Heat>
		<EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
		<PainShockThreshold>0.05</PainShockThreshold>		
	</equippedStatOffsets>
    <costList>
		<Cloth>68</Cloth>
		<ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>FlakArmor</researchPrerequisite>
		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
		<recipeUsers Inherit="False">
			<li>HandTailoringBench</li>
			<li>ElectricTailoringBench</li>
        </recipeUsers>
    </recipeMaker>
    <apparel>
		<bodyPartGroups>
			<li>Neck</li>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Waist</li>
			<li>Arms</li>
			<li>Legs</li>
		</bodyPartGroups>
		<wornGraphicPath>Apparel/Zuckuss_Apparel</wornGraphicPath>
		<layers>
			<li>Shell</li>
		</layers>
		<tags>
			<li>...</li>
		</tags>
		<defaultOutfitTags>
			<li>Soldier</li>
		</defaultOutfitTags>
		<useDeflectMetalEffect>true</useDeflectMetalEffect>
	</apparel>
	<thingCategories Inherit="False">
		<li>Apparel</li>
	</thingCategories>
  </ThingDef>
 
</Defs>