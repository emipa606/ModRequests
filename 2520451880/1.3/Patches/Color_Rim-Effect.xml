<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rim-Effect: Prothean Archotechs</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- Material -->
			   <li Class="PatchOperationReplace">
				  <xpath>/Defs/ThingDef[defName="ArchonitesResource_WVC"]/graphicData/texPath</xpath>
				  <value>
					<texPath>Things/RimEffectArchonitesWVC</texPath>
				  </value>
			   </li>
			   <li Class="PatchOperationReplace">
				  <xpath>/Defs/ThingDef[defName="ArchonitesResource_WVC"]/stuffProps/color</xpath>
				  <value>
					<color>(92,108,121)</color>
				  </value>
			   </li>
			   <!-- injector -->
			   <li Class="PatchOperationReplace">
				  <xpath>/Defs/ThingDef[defName="MechInstallerWVC"]/graphicData/texPath</xpath>
				  <value>
					<texPath>Things/RimEffectMechInstallerWVC</texPath>
				  </value>
			   </li>
			   <!-- Fog -->
			   <li Class="PatchOperationReplace">
				  <xpath>/Defs/WeatherDef[defName="ArchonitesFog_WVC"]/skyColorsDay/overlay</xpath>
				  <value>
					<overlay>(0.7,0.7,1.0)</overlay>
				  </value>
			   </li>
			   <li Class="PatchOperationReplace">
				  <xpath>/Defs/WeatherDef[defName="ArchonitesFog_WVC"]/skyColorsDusk/overlay</xpath>
				  <value>
					<overlay>(0.6,0.6,1.0)</overlay>
				  </value>
			   </li>
			   <li Class="PatchOperationReplace">
				  <xpath>/Defs/WeatherDef[defName="ArchonitesFog_WVC"]/skyColorsNightEdge/overlay</xpath>
				  <value>
					<overlay>(0.5,0.5,1.0)</overlay>
				  </value>
			   </li>
			   <li Class="PatchOperationReplace">
				  <xpath>/Defs/WeatherDef[defName="ArchonitesFog_WVC"]/skyColorsNightMid/overlay</xpath>
				  <value>
					<overlay>(0.5,0.5,1.0)</overlay>
				  </value>
			   </li>
			</operations>
		</match>
  </Operation>
</Patch>
