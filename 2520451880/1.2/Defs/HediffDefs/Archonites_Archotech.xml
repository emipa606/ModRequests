  <HediffDef ParentName="ImplantHediffBase">
	<defName>ArchonitesNetwork_WVC</defName>
	<label>Archonites network</label>
	<labelNoun>a archonites network</labelNoun>
	<description>The Archonite Network is a network of coordination of the higher mechanites. This network includes AI dealing with swarm control, the core, which is the center of replication and replacement of mechanites, as well as a vanometric energy source. Archonite AI has a strong psionic bond, which affects the pawn. The network is not an integrator and serves as a coordination point for nano machines.\nHe does not allow the pawn to die and protects it with all his might.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<scenarioCanAdd>false</scenarioCanAdd>
	<descriptionHyperlinks>
	  <HediffDef>Mechanoidisation_WVC</HediffDef>
	  <HediffDef>Archonites_WVC</HediffDef>
	  <!-- <HediffDef>DeathArchonites_WVC</HediffDef> -->
	</descriptionHyperlinks>
	<stages>
	  <li>
		<!-- <totalBleedFactor>0</totalBleedFactor> -->
		<!-- <naturalHealingFactor>2.0</naturalHealingFactor> -->
		<!-- <hungerRateFactor>0</hungerRateFactor> -->
        <!-- <restFallFactor>0</restFallFactor> -->
		<statFactors>
		  <!-- <MentalBreakThreshold>0</MentalBreakThreshold> -->
		  <IncomingDamageFactor>0.2</IncomingDamageFactor>
		  <!-- <ToxicSensitivity>0</ToxicSensitivity> -->
		  <ArchonitesSensitivity_WVC>0</ArchonitesSensitivity_WVC>
		</statFactors>
        <statOffsets>
          <PsychicSensitivity>0.2</PsychicSensitivity>
		  <!-- <GlobalLearningFactor>1</GlobalLearningFactor> -->
          <!-- <ImmunityGainSpeed>1.00</ImmunityGainSpeed> -->
        </statOffsets>
		<allowedMentalBreakIntensities>
		  <li>None</li>
		  <!-- <li>Minor</li> -->
		</allowedMentalBreakIntensities>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<postFactor>1.5</postFactor>
		  </li>
		</capMods>
		<!-- <makeImmuneTo> -->
			<!-- <li>FibrousMechanites</li> -->
			<!-- <li>SensoryMechanites</li> -->
			<!-- <li>DeathArchonites_WVC</li> -->
		<!-- </makeImmuneTo> -->
		<hediffGivers>
		  <li Class="HediffGiver_Bleeding">
			<hediff>BloodLoss_WVC</hediff>
		  </li>
		  <li Class="HediffGiver_Hypothermia">
			<hediff>Hypothermia_WVC</hediff>
		  </li>
		  <li Class="HediffGiver_Heat">
			<hediff>Heatstroke_WVC</hediff>
		  </li>
		</hediffGivers>
	  </li>
	</stages>
	<comps>
		<li Class="Archonites.HediffCompProperties_HealWoundsWVC" />
		<li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
  </HediffDef>

