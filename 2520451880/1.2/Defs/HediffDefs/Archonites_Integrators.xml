<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
	<defName>Mechanoidisation_WVC</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Archonites integrators</label>
	<description>Integrators differ in the way they transform from standard Archonites. They do not protect their goal from external factors, the only way to prevent the patient from dying is to constantly monitor his condition.</description>
	<descriptionHyperlinks>
	  <HediffDef>Archonites_WVC</HediffDef>
	  <!-- <HediffDef>DeathArchonites_WVC</HediffDef> -->
	  <HediffDef>ArchonitesNetwork_WVC</HediffDef>
	  <ThingDef>MechInstallerWVC</ThingDef>
	  <HediffDef>IntegratorsPrime_WVC</HediffDef>
	</descriptionHyperlinks>
    <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>
	<everCurableByItem>false</everCurableByItem>
	<scenarioCanAdd>true</scenarioCanAdd>
	<isBad>false</isBad>
	<makesAlert>false</makesAlert>
	<hediffGivers>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Arm_WVC</hediff>
		<partsToAffect>
		  <li>Shoulder</li>
		  <li MayRequire="sarg.alphaanimals">AA_JellyfishTentacle</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Leg_WVC</hediff>
		<partsToAffect>
		  <li>Leg</li>
		  <li>InsectLeg</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Eye_WVC</hediff>
		<partsToAffect>
		  <li>Eye</li>
		  <li MayRequire="sutsutman.minchothemintchocoslimeharver">Mincho_Eyespot</li>
		</partsToAffect>
	  </li>
	  <!-- My -->
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Nose_WVC</hediff>
		<partsToAffect>
		  <li>Nose</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Ear_WVC</hediff>
		<partsToAffect>
		  <li>Ear</li>
		  <li>Antenna</li>
		  <li MayRequire="sarg.alphaanimals">AA_EcholocationOrgan</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Heart_WVC</hediff>
		<partsToAffect>
		  <li>Heart</li>
		  <li>InsectHeart</li>
		  <li MayRequire="nemonian.my">MoyoHeart</li>
		  <li MayRequire="xrushha.animaanimals">AnimaHeart</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Stomach_WVC</hediff>
		<partsToAffect>
		  <li>Stomach</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Lung_WVC</hediff>
		<partsToAffect>
		  <li>Lung</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Kidney_WVC</hediff>
		<partsToAffect>
		  <li>Kidney</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Liver_WVC</hediff>
		<partsToAffect>
		  <li>Liver</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Spine_WVC</hediff>
		<partsToAffect>
		  <li>Spine</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Jaw_WVC</hediff>
		<partsToAffect>
		  <li>Jaw</li>
		  <li>InsectMouth</li>
		  <li>Beak</li>
		  <li>AnimalJaw</li>
		  <li>SnakeMouth</li>
		  <li MayRequire="sarg.alphaanimals">AA_InsectMouth</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>ArchonitesSwarm_Tail_WVC</hediff>
		<partsToAffect>
		  <li MayRequire="gloomylynx.dragonianrace">DR_Tail</li>
		  <li>Tail</li>
		  <li MayRequire="nemonian.my">Moyo_Tail</li>
		  <li MayRequire="pupa.insectgirls">IG_Tail</li>
		</partsToAffect>
	  </li>
	  <li Class="HediffGiver_RandomWVC">
		<mtbDays>80</mtbDays>
		<hediff>ArchonitesNetwork_WVC</hediff>
	  </li>
	  <li MayRequire="sutsutman.minchothemintchocoslimeharver" Class="HediffGiver_RandomWVC">
		<mtbDays>5</mtbDays>
		<hediff>GrayGooWVC</hediff>
		<partsToAffect>
		  <li MayRequire="sutsutman.minchothemintchocoslimeharver">Mincho_Torso</li>
		</partsToAffect>
	  </li>
	  <!-- SOS2 -->
	  <li MayRequire="kentington.saveourship2" Class="HediffGiver_RandomWVC">
		<mtbDays>15</mtbDays>
		<hediff>SoSArchotechSkin</hediff>
		<partsToAffect>
		  <li>Torso</li>
		  <li MayRequire="sutsutman.minchothemintchocoslimeharver">Mincho_Torso</li>
		</partsToAffect>
	  </li>
	</hediffGivers>
	<comps>
		<li Class="Archonites.HediffCompProperties_HealWoundsWVC" />
		<li Class="HediffCompProperties_Disappears">
			<showRemainingTime>True</showRemainingTime>
			<disappearsAfterTicks>
				<!-- <min>60000</min> -->
				<!-- <max>60000</max> -->
				<min>7200000</min>
				<max>8100000</max>
			</disappearsAfterTicks>
		</li>
		<li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
	<stages>
	  <li>
		<statFactors>
		  <ArchonitesSensitivity_WVC>0</ArchonitesSensitivity_WVC>
		</statFactors>
		<restFallFactorOffset>1.0</restFallFactorOffset>
		<statOffsets>
		  <PainShockThreshold>-0.60</PainShockThreshold>
		</statOffsets>
		<!-- <makeImmuneTo> -->
			<!-- <li>FibrousMechanites</li> -->
			<!-- <li>SensoryMechanites</li> -->
			<!-- <li>DeathArchonites_WVC</li> -->
		<!-- </makeImmuneTo> -->
	  </li>
	</stages>
  </HediffDef>
  <HediffDef>
	<defName>Belial_WVC</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Belial integrators</label>
	<description>This integrators is similar in principle to its older brothers, but was needed to transform the sea world. As a multitasking system of nano machines, integrators spray themselves into water and using the sea world as a resource, they gradually capture every drop of water. After that, the transformation begins. These integrators are a simplified system designed to prepare the transformation target for further integration.\nFor a person, it's just an opportunity to become stronger.</description>
	<descriptionHyperlinks>
	  <!-- <HediffDef>Mechanoidisation_WVC</HediffDef> -->
	  <HediffDef>IntegratorsPrime_WVC</HediffDef>
	</descriptionHyperlinks>
	<defaultLabelColor>(120,1,255)</defaultLabelColor>
	<everCurableByItem>false</everCurableByItem>
	<scenarioCanAdd>true</scenarioCanAdd>
	<isBad>false</isBad>
	<spawnThingOnRemoved>MechInstallerWVC</spawnThingOnRemoved>
	<hediffGivers>
	</hediffGivers>
	<comps>
		<li Class="HediffCompProperties_HealPermanentWounds" />
		<li Class="HediffCompProperties_Disappears">
			<showRemainingTime>True</showRemainingTime>
			<disappearsAfterTicks>
				<min>1800000</min>
				<max>1860000</max>
			</disappearsAfterTicks>
		</li>
		<li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
	<stages>
	  <li>
		<restFallFactorOffset>1.0</restFallFactorOffset>
	  </li>
	</stages>
  </HediffDef>
