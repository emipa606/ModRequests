<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>Combat Extended</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DSMelee_Porter_Stick"]/statBases</xpath>
				<value>
						<MeleeCounterParryBonus>1.33</MeleeCounterParryBonus>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DSMelee_Porter_Stick"]/tools</xpath>
				<value>
					<tools> 
						<li Class="CombatExtended.ToolCE">
							<label>shaft</label>
							<capacities>
								<li>DSMelee_PorterStickStun</li>
							</capacities>
							<power>4</power>
							<armorPenetrationBlunt>1.5</armorPenetrationBlunt>
							<cooldownTime>1.78</cooldownTime>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>handle</label>
							<capacities>
								<li>DSMelee_PorterStickSmash</li>
							</capacities>
							<power>4</power>
							<armorPenetrationBlunt>1</armorPenetrationBlunt>
							<cooldownTime>1.78</cooldownTime>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>tip</label>
							<labelUsedInLogging>false</labelUsedInLogging>
							<capacities>
								<li>Poke</li>
							</capacities>
							<power>11</power>
							<armorPenetrationBlunt>4</armorPenetrationBlunt>
							<cooldownTime>3.48</cooldownTime>
						</li>
					</tools>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DSMelee_Porter_Stick"]/equippedStatOffsets</xpath>
				<value>
					<MeleeCritChance>0.2</MeleeCritChance>
					<MeleeParryChance>1.5</MeleeParryChance>
					<MeleeDodgeChance>0.13</MeleeDodgeChance>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>