<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>Combat Extended</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_Uniform"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
					<Bulk>5</Bulk>
					<WornBulk>3</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_Uniform"]/apparel/bodyPartGroups</xpath>
				<value>
					<li>Hands</li>
					<li>Feet</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_Uniform"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>5</CarryBulk>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>