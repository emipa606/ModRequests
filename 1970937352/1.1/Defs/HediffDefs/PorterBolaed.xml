<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef ParentName="InfectionBase">
        <defName>PorterBola</defName>
        <label>tethered</label>
        <labelNoun>being tied</labelNoun>
        <description>this is not texas, space cowboy. being tethered up by a bola gun.</description>
        <makesSickThought>false</makesSickThought>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-3.5</severityPerDay>
            </li>            
        </comps>
        <stages>
            <li>
                <minSeverity>0.1</minSeverity>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.25</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.25</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.35</minSeverity>
                <label>moderate</label>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.5</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.5</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.65</minSeverity>
                <label>severe</label>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <setMax>0.30</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <setMax>0.30</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.9</minSeverity>
                <label>extreme</label>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <setMax>0</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <setMax>0</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
    
    <DamageDef ParentName="Scratch">
        <defName>PorterBolaBola</defName>
        <label>burn</label>
        <workerClass>DamageWorker_AddInjury</workerClass>
        <additionalHediffs>
            <li>
                <hediff>PorterBola</hediff>
                <severityPerDamageDealt>0.25</severityPerDamageDealt>
            </li>
        </additionalHediffs>
    </DamageDef>


</Defs>