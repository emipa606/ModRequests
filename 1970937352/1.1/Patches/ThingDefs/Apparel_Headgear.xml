<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>Combat Extended</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_Balaclava"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>1.5</StuffEffectMultiplierArmor>
					<Bulk>1</Bulk>
					<WornBulk>0.5</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_Balaclava"]/apparel/layers</xpath>
				<value>
				  <li>OnHead</li>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_HBalaclava"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>4.5</StuffEffectMultiplierArmor>
					<Bulk>1</Bulk>
					<WornBulk>0.5</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_HBalaclava"]/apparel/layers</xpath>
				<value>
				  <li>OnHead</li>
				  <li>MiddleHead</li>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_Otterhat"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>1.5</StuffEffectMultiplierArmor>
					<Bulk>1</Bulk>
					<WornBulk>0.5</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DSApparel_POR_Otterhat"]/apparel/layers</xpath>
				<value>
				  <li>Overhead</li>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>