<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ScenarioDef>
		<defName>PorterCaravan</defName>
		<label>Porter Caravan</label>
		<description>These Porters are trekking through the countryside (burninating all the peasants) bringing essentials to far flung settlements.</description>
		<scenario>
			<summary>A group(4) of Porters transporting goods.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>POR_Player</factionDef>
			</playerFaction>
			<parts>
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>4</pawnCount>
					<pawnChoiceCount>8</pawnChoiceCount>
				</li>
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
				</li>
				<li Class="ScenPart_SetNeedLevel">
					<def>SetNeedLevel</def>
					<chance>1</chance>
					<context>PlayerStarter</context>
					<need>Rest</need>
					<levelRange>0.2925926~0.5703704</levelRange>
				</li>
				<li Class="ScenPart_StartingAnimal">
					<def>StartingAnimal</def>
					<animalKind>Muffalo</animalKind>
					<count>2</count>
					<bondToRandomPlayerPawnChance>1</bondToRandomPlayerPawnChance>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>750</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pemmican</thingDef>
					<count>300</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>SmokeleafLeaves</thingDef>
					<count>150</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Kibble</thingDef>
					<count>150</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineIndustrial</thingDef>
					<count>10</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Steel</thingDef>
					<count>200</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>RawHops</thingDef>
					<count>50</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineHerbal</thingDef>
					<count>10</count>
				</li>
				<li Class="ScenPart_StartingAnimal">
					<def>StartingAnimal</def>
					<count>1</count>
				</li>
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>While traveling as a porter, you happened upon an ideal spot for a new Outpost. With your three companions, you begin to build...</text>
					<closeSound>GameStartSting</closeSound>
				</li>
				<li Class="ScenPart_CreateIncident">
					<def>CreateIncident</def>
					<incident>TraderCaravanArrival</incident>
					<intervalDays>10</intervalDays>
					<repeat>True</repeat>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>

</Defs>