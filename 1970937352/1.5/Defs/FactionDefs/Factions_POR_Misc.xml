<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef ParentName="FactionBase" Name="POR_Base_Common" Abstract="True">
		<pawnSingular>Porter</pawnSingular>
		<pawnsPlural>Porters</pawnsPlural>
		<listOrderPriority>20</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canMakeRandomly>false</canMakeRandomly>
		<canStageAttacks>false</canStageAttacks>
		<canSiege>false</canSiege>
		<factionIconPath>World/POR_icon</factionIconPath>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<melaninRange>0~0.1</melaninRange>
		<fixedName>Porters of the Rim</fixedName>
		<!--<factionNameMaker>PONamerFaction</factionNameMaker>-->
		<settlementNameMaker>PORNamerFaction</settlementNameMaker>
		<!--<pawnNameMaker>PORNamer</pawnNameMaker>-->
		<techLevel>Industrial</techLevel>
		<backstoryFilters>
		  <li>
			<categories>
			  <li>Outlander</li>
			</categories>
			<commonality>0.95</commonality>
		  </li>
		  <li>
			<categories>
			  <li>Offworld</li>
			</categories>
			<commonality>0.05</commonality>
		  </li>
		</backstoryFilters>    
		<leaderTitle>Caravan Leader</leaderTitle>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 1)</li>
				<!--Constant 1 at all points levels-->
			</points>
		</raidCommonalityFromPointsCurve>
		<caravanTraderKinds>
			<li>Caravan_POR_BulkGoods</li>
			<li>Caravan_POR_CombatSupplier</li>
			<li>Caravan_POR_PirateMerchant</li>
			<li>Caravan_POR_Exotic</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_POR_Standard</li>
			<li>Caravan_POR_BulkGoods</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_POR_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>
			<min>-40</min>
			<max>45</max>
		</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(800, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, ranged with melee mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
				  <POR_Porter>10</POR_Porter>
				  <POR_Operator>4</POR_Operator>
				</options>
			</li>
			<li>
				<!-- Peaceful -->
				<kindDef>Peaceful</kindDef>
				<options>
				  <POR_Porter>3</POR_Porter>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<POR_Trader>1</POR_Trader>
				</traders>
				<carriers>
					<Muffalo>4</Muffalo>
				</carriers>
				<guards>
				  <POR_Porter>8</POR_Porter>
				  <POR_Operator>1</POR_Operator>
				</guards>
			</li>
			
			<li>
				<!-- Settlement. -->
				<kindDef>Settlement</kindDef>
				<options>
				  <POR_Porter>10</POR_Porter>
				  <POR_Operator>3</POR_Operator>
				</options>
			</li>
		</pawnGroupMakers>
    <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>2000</configurationListOrderPriority>
	</FactionDef>

	<FactionDef ParentName="POR_Base_Common">
		<defName>PORBase</defName>
		<label>Porter Base</label>
		<description>A simple outpost for the porters to rest.</description>
		<colorSpectrum>
		  <li>(128, 128, 128)</li>
		  <li>(192, 192, 192)</li>
		</colorSpectrum>
	</FactionDef>
</Defs>