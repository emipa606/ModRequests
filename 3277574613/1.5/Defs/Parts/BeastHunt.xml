<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Legendary Bear Hunt -->
  <SitePartDef>
    <defName>RDR_LegendaryBearHunt</defName>
    <label>legendary bear hunt</label>
    <description>A Legendary Bear has been sighted here. It will stay there for the foreseeable future but move on in time.</description>
    <siteTexture>World/WorldObjects/Sites/GenericSite</siteTexture>
    <expandingIconTexture>UI/Hunt_LegendaryBear</expandingIconTexture>
    <handlesWorldObjectTimeoutInspectString>true</handlesWorldObjectTimeoutInspectString>
    <tags>
      <li>RDR_LegendaryBearHunt</li>
    </tags>
  </SitePartDef>

  <GenStepDef>
    <defName>RDR_LegendaryBearHuntGen</defName>
    <linkWithSite>RDR_LegendaryBearHunt</linkWithSite>
    <order>400</order>
    <genStep Class="RimRedRedemption.MapGeneration.LegendaryHunts.GenStep_LegendaryBear">
      <count>1</count>
      <nearMapCenter>true</nearMapCenter>
    </genStep>
  </GenStepDef>
  
