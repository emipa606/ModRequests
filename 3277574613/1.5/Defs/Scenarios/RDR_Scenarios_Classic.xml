<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
    <defName>AmbitiousCowboy</defName>
    <label>Ambitious Cowboys</label>
    <description>You stumble upon an old inn that still has some rooms. Salvage what you can and get out, or stay and see if anyone comes back. </description>
    <scenario>
      <summary>There is nothing more important to a cowboy than his reputation.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>PlayerCowboyColony</factionDef>
      </playerFaction>
      <parts>

      <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>3</pawnCount>
          <pawnChoiceCount>3</pawnChoiceCount>
        </li>
        <!-- Pawn arrival-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
          <visible>false</visible>
        </li>
        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>300</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RDR_SnakeOil</thingDef>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gold</thingDef>
          <count>25</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Hay</thingDef>
          <count>200</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>WoodLog</thingDef>
          <count>750</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Steel</thingDef>
          <count>500</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Pemmican</thingDef>
          <count>750</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineHerbal</thingDef>
          <count>25</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RDR_EvansRepeater</thingDef>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <animalKind>LabradorRetriever</animalKind>
          <count>1</count>
          <bondToRandomPlayerPawnChance>1.0</bondToRandomPlayerPawnChance>
        </li>
        <li Class="ScenPart_StartingAnimal">
				<def>StartingAnimal</def>
				<animalKind>Horse</animalKind>
				<count>2</count>
			  </li>
        
<li Class="KCSG.ScenPart_AddStartingStructure">
  <def>VFEC_AddStartingStructure</def>
  <structureLabel>An old bar that appears to be still be intact</structureLabel>
  <nearMapCenter>True</nearMapCenter>
  <chooseFrom>
    <li>RDR_Valentine</li>
  </chooseFrom>
</li>

      </parts>
    </scenario>
  </ScenarioDef>



</Defs>