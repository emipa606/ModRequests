<!--Gunslinger-->
  <PawnKindDef Name="RDR_Bandito_Gunslinger" ParentName="RDR_Outlaws_Base">
    <defName>RDR_Bandito_Gunslinger</defName>
    <label>Gunslinger</label>
	  <race>Human</race>
    <combatPower>120</combatPower>
    <isFighter>true</isFighter>
    <gearHealthRange>
      <min>0.5</min>
      <max>2.0</max>
