<Defs>


<!-- Pawn Class-->
  <PawnKindDef Name="RDR_Trapper_Base" Abstract="True">
    <race>Human</race>
    <defaultFactionType>RDR_TrappersFaction</defaultFactionType>
       <chemicalAddictionChance>0.05</chemicalAddictionChance>
 <backstoryFilters>
<li><categories><li>Outlander</li></categories><commonality>0.3</commonality></li>
</backstoryFilters> 
    <invNutrition>2.55</invNutrition>
    <invFoodDef>Pemmican</invFoodDef>
    <itemQuality>Good</itemQuality>
    <backstoryCryptosleepCommonality>0.1</backstoryCryptosleepCommonality>
    <maxGenerationAge>70</maxGenerationAge>
<minGenerationAge>20</minGenerationAge>
<apparelDisallowTags>
    <li MayRequire="Ludeon.RimWorld.Ideology">Apparel_Broadwrap</li>
    <li MayRequire="Ludeon.RimWorld.Ideology">Apparel_Headwrap</li>
    <li MayRequire="Ludeon.RimWorld.Ideology">Apparel_VisageMask</li>
    <li MayRequire="Ludeon.RimWorld.Ideology">Apparel_Slicecap</li>
    <li MayRequire="Ludeon.RimWorld.Ideology">Apparel_Burka</li>
