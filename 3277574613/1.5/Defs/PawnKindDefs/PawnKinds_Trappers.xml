    <li MayRequire="Ludeon.RimWorld.Ideology">Apparel_Blindfold</li>
    </apparelDisallowTags>
    <apparelTags>
    <li>RDRPonchos</li>
    <li>Outlander</li>
    </apparelTags>
  </PawnKindDef>


<!--Scout-->
  <PawnKindDef Name="RDR_Scout" ParentName="RDR_Trapper_Base">
    <defName>RDR_Scout</defName>
    <label>Scout</label>
	  <race>Human</race>
    <combatPower>60</combatPower>
    <itemQuality>Normal</itemQuality>
    <isFighter>true</isFighter>
    <gearHealthRange>
      <min>0.2</min>
      <max>2.0</max>
    </gearHealthRange>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
      <li>NeolithicMeleeAdvanced</li>
      </weaponTags>
    <apparelTags>
      <li>Outlander</li>
    </apparelTags>
    <apparelRequired>
    <li>Apparel_CollarShirt</li>
    <li>Apparel_Pants</li>
