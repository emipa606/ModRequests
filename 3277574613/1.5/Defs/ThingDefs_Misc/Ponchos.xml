<?xml version="1.0" encoding="utf-8"?>

<Defs>


<!--Dustrider-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_DustRider</defName>
    <label>DustRider</label>
    <description>Made for the rugged rider who braves storms and sunsets alike. Keeps the dust off and the adventure on.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/DustRider/DustRider</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>10</onGroundRandomRotateAngle>
      <drawSize>1.0</drawSize>
    </graphicData>
    <costStuffCount>75</costStuffCount>
    <stuffCategories>
    <li>Leathery</li>
    </stuffCategories>
    <tradeability>All</tradeability>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>16000</WorkToMake>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.60</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1.0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <CaravanRidingSpeedFactor>0.25</CaravanRidingSpeedFactor>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <tradeTags>
      <li>Clothing</li>
    </tradeTags>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/DustRider/DustRider</wornGraphicPath>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
      <shellRenderedBehindHead>true</shellRenderedBehindHead>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>RDR_Ponchos</li>
        <li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  

<!--Fur Poncho -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_FurPoncho</defName>
    <label>Fur Poncho</label>
    <description>Wrap yourself in frontier luxury with this warm and rugged poncho. Perfect for chilly nights under the stars or making a statement in town.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/FurPoncho/FurPoncho</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
      <drawSize>1.5</drawSize>
    </graphicData>
    <stuffCategories>
    </stuffCategories>
    <costList>
    <WoolBison>75</WoolBison>
    <Cloth>25</Cloth>
    </costList>
    <statBases>
    <!--Good for cold not heat-->
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>18000</WorkToMake>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.50</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>-0.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <RangedWeapon_Cooldown>0.3</RangedWeapon_Cooldown>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <tradeTags>
      <li>Clothing</li>
    </tradeTags>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/FurPoncho/FurPoncho</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <shellRenderedBehindHead>False</shellRenderedBehindHead>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Neolithic</li>
        <li>IndustrialBasic</li>
        <li>RDR_Poncho</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

