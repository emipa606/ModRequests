<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef Abstract="True" Name="BuildingFloorCoveringBase" ParentName="BuildingBase">
    <altitudeLayer>FloorCoverings</altitudeLayer>
    <wipesPlants>true</wipesPlants>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <designationCategory>Floors</designationCategory>
    <selectable>true</selectable>
    <useHitPoints>true</useHitPoints>
    <defaultPlacingRot>South</defaultPlacingRot>
    <canGenerateDefaultDesignator>True</canGenerateDefaultDesignator>
    <blocksAltitudes>
      <li>FloorCoverings</li>
    </blocksAltitudes>
    <building>
      <isEdifice>false</isEdifice>
    </building>
  </ThingDef>


<ThingDef Abstract="True" Name="BuildingFloorCoveringMediumBase" ParentName="BuildingFloorCoveringBase">
    <size>(3,3)</size>
    <statBases>
      <Beauty>25</Beauty>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>100</Mass>
      <StyleDominance>30</StyleDominance>
    </statBases>
  </ThingDef>


<ThingDef ParentName="BuildingFloorCoveringMediumBase">
    <defName>LegendaryBear_Rug</defName>
    <label>Legendary Bear Rug</label>
    <description>A huge rug made from a giant bear. It must be the size of three or four people. This should keep you warm and provide plenty of beauty in the area.</description>
    <dominantStyleCategory>Rustic</dominantStyleCategory>
    <statBases>
      <Flammability>0.50</Flammability>
      <Beauty>50</Beauty>
    </statBases>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/FloorCoverings/LegendaryBearRug</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <building>
    </building>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
    <costList>
      <RDR_LegendaryBearPelt>75</RDR_LegendaryBearPelt>
    </costList>
  </ThingDef>

  <ThingDef ParentName="BuildingFloorCoveringMediumBase">
    <defName>LegendaryWolf_Rug</defName>
    <label>Legendary Wolf Rug</label>
    <description>A warm rug made from the remains of a huge wolf. This should keep you warm like the animal who wore it and provide beauty to wherever it is placed.</description>
    <dominantStyleCategory>Rustic</dominantStyleCategory>
    <statBases>
      <Flammability>0.50</Flammability>
      <Beauty>50</Beauty>
    </statBases>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/FloorCoverings/LegendaryWolfRug</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <building>
    </building>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
    <costList>
      <RDR_LegendaryWolfPelt>75</RDR_LegendaryWolfPelt>
    </costList>
  </ThingDef>


  </Defs>
