<Defs>
  

<!--Bandolier-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_Bandolier</defName>
    <label>Bandolier Pouch</label>
    <description>Carry your ammo in style with this rugged accessory. Perfect for keeping your reloads handy and your look complete on the frontier.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Bandolier/BandolierPouch</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>10</onGroundRandomRotateAngle>
      <drawSize>1.5</drawSize>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <possessionCount>1</possessionCount>
    <stuffCategories>
    </stuffCategories>
    <tradeability>Buyable</tradeability>
    <costList>
      <Steel>50</Steel>
      <Leather_Plain>75</Leather_Plain>
    </costList>
    <statBases>
      <MaxHitPoints>125</MaxHitPoints>
      <WorkToMake>5800</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.10</StuffEffectMultiplierArmor>
      <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
      <StuffEffectMultiplierInsulation_Cold>0.60</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <RangedCooldownFactor>-0.08</RangedCooldownFactor>
      <AimingDelayFactor>-0.2</AimingDelayFactor>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Bandolier/BandolierPouch</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>RDR_BandolierLayer</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>Western</li>
        <li>RDRApparel</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <tradeTags>
      <li>Armor</li>
      <li>ComplexClothing</li>
    </tradeTags>
  </ThingDef>

