<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	
    <!--BanditoHat-->
  <ThingDef ParentName="ApparelBase">
    <defName>RDR_BanditoHat</defName>
    <label>BanditoHat</label>
    <description>A Hat that belonged to a well known Bandito Outlaw.</description>
    <graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/BanditoHat/BanditoHat</texPath>
            <shaderType>CutoutComplex</shaderType>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>None</tradeability>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <tradeTags>
    </tradeTags>
    <generateCommonality>0.0</generateCommonality>
    <statBases>
    <!--nothing special here-->
       <MaxHitPoints>150</MaxHitPoints>
      <Mass>1.2</Mass>
      <StuffEffectMultiplierArmor>1.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.60</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/BanditoHat/BanditoHat</wornGraphicPath>
      <canBeGeneratedToSatisfyWarmth>False</canBeGeneratedToSatisfyWarmth>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>RDRHats</li>
        <li>Western</li>
      </tags>
    </apparel>
    <comps>
			<li Class="VanillaApparelExpanded.CompProperties_SwitchApparel" MayRequire="oskarpotocki.vanillafactionsexpanded.core">
				<SwitchTo>RDR_BanditoHatDown</SwitchTo>
				<graphicPath>Things/Pawn/Humanlike/Apparel/BanditoHat/HatDown</graphicPath>
				<Label>Hat Down</Label>
			</li>
		</comps>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
	

<!--BanditoHatDown-->
  <ThingDef ParentName="ApparelBase">
    <defName>RDR_BanditoHatDown</defName>
    <label>BanditoHatDown</label>
    <description>The Downside version of the Bandito hat.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/BanditoHatDOWN/BanditoHatDown</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.0</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>None</tradeability>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <tradeTags>
    </tradeTags>
    <statBases>
    <!--nothing special here-->
       <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>2800</WorkToMake>
      <Mass>0.07</Mass>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <generateCommonality>0</generateCommonality>
    <equippedStatOffsets>
    </equippedStatOffsets>
    <apparel>
    <renderNodeProperties>
				<li>
					<texPath>Things/Pawn/Humanlike/Apparel/BanditoHatDOWN/BanditoHatDown</texPath>
					<shaderTypeDef>CutoutComplex</shaderTypeDef>
					<parentTagDef>ApparelHead</parentTagDef>
					<drawData>
                    <scale>1.1</scale>
      <defaultData>
        <layer>-10</layer> <!-- Adjust the layer to be behind the head -->
      </defaultData>
      <dataEast>
        <layer>380</layer>
        <offset>(-0.1, 0, -0.3)</offset>
      </dataEast>
      <dataNorth>
        <layer>600</layer>
        <offset>(0, 0, -0.3)</offset>
      </dataNorth>
      <dataSouth>
        <layer>-10</layer>
        <offset>(0, 0, -0.3)</offset>
      </dataSouth>
      <dataWest>
        <layer>380</layer>
        <offset>(0.1, 0, -0.3)</offset>
      </dataWest>
    </drawData>
				</li>
			</renderNodeProperties>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/BanditoHatDOWN/BanditoHatDown</wornGraphicPath>
      <canBeGeneratedToSatisfyWarmth>True</canBeGeneratedToSatisfyWarmth>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>RDRHats</li>
        <li>Western</li>
      </tags>
    </apparel>
    <comps>
			<li Class="VanillaApparelExpanded.CompProperties_SwitchApparel" MayRequire="oskarpotocki.vanillafactionsexpanded.core">
				<SwitchTo>RDR_BanditoHat</SwitchTo>
				<graphicPath>Things/Pawn/Humanlike/Apparel/BanditoHat/HatUp</graphicPath>
				<Label>Hat Up</Label>
			</li>
		</comps>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>


</Defs>