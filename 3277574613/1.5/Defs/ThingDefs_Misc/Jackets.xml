<Defs>


<!--Marshal Duster-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_MarshalDuster</defName>
    <label>Marshal Duster</label>
    <description>Keep the dust and outlaws off your back with this stylish coat. It's the lawman's choice for both fashion and function.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/MarshalDuster/MarshalDuster</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.7</drawSize>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <stuffCategories>
    </stuffCategories>
     <costList>
      <Leather_Plain>75</Leather_Plain>
    </costList>
    <statBases>
    <!--slightly better flak vest-->
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>3.5</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.10</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>2.1</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>0.60</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.95</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
    <ShootingAccuracyPawn>0.10</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/MarshalDuster/MarshalDuster</wornGraphicPath>
      <shellRenderedBehindHead>True</shellRenderedBehindHead>
      <canBeGeneratedToSatisfyWarmth>True</canBeGeneratedToSatisfyWarmth>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>RDRLawmen</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <displayPriority>220</displayPriority>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>



<!--Dusty Duster-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_DustyDuster</defName>
    <label>Dusty Duster</label>
    <description>Weathered by wind and time, this duster tells tales of rugged journeys and dusty trails. Ideal for those who live life on the edge of civilization.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/DustyDuster/DustyDuster</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.5</drawSize>
    </graphicData>
    <stuffCategories>
    </stuffCategories>
    <costList>
    <Leather_Plain>75</Leather_Plain>
    </costList>
    <tradeability>All</tradeability>
    <statBases>
    <!--A lighter version of the marshal duster with great heat defense-->
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>1.56</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Heat>1.0</StuffEffectMultiplierInsulation_Heat>
      <StuffEffectMultiplierInsulation_Cold>0.56</StuffEffectMultiplierInsulation_Cold>
      <Insulation_Cold>1.0</Insulation_Cold>
      <Insulation_Heat>1.0</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
    <RangedWeapon_Cooldown>-0.3</RangedWeapon_Cooldown>
    <CaravanRidingSpeedFactor>0.10</CaravanRidingSpeedFactor>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/DustyDuster/DustyDuster</wornGraphicPath>
      <shellRenderedBehindHead>False</shellRenderedBehindHead>
      <canBeGeneratedToSatisfyWarmth>True</canBeGeneratedToSatisfyWarmth>
      <useWornGraphicMask>True</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>RDRApparel</li>
        <li>IndustrialBasic</li>
        <li>RDRSheriff</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <displayPriority>220</displayPriority>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <tradeTags>
      <li>ComplexClothing</li>
    </tradeTags>
    </ThingDef>

    <!--Rugged Duster-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_RuggedDuster</defName>
    <label>Rugged Duster</label>
    <description>Tough as the terrain you roam. This coat can handle dust, dirt, and a few scrapes with outlaws.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/RuggedDuster/RuggedDuster</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.4</drawSize>
    </graphicData>
    <costStuffCount>75</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
    <Cloth>25</Cloth>
    </costList>
    <tradeability>All</tradeability>
    <statBases>
    <!--A little better than a vanilla duster-->
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.8</StuffEffectMultiplierArmor>
