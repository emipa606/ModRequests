<Defs>


<!--Dalton-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_Dalton</defName>
    <label>Dalton</label>
    <description>Named after the infamous outlaw gang, this rugged outfit is perfect for those who live by their own rules. Wear it with swagger and a hint of danger.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Dalton/Dalton</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.5</drawSize>
    </graphicData>
    <costStuffCount>75</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <tradeability>All</tradeability>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>4800</WorkToMake>
      <Mass>0.70</Mass>
      <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.60</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
    <GeneralLaborSpeed>0.25</GeneralLaborSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <tradeTags>
      <li>ComplexClothing</li>
    </tradeTags>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Dalton/Dalton</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <canBeGeneratedToSatisfyWarmth>True</canBeGeneratedToSatisfyWarmth>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>RDRApparel</li>
        <li>Western</li>
        <li>IndustrialBasic</li>
      </tags>
    </apparel>
    <recipeMaker>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
   <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>


