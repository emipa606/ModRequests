<?xml version="1.0" encoding="utf-8"?>

<Defs>

<!--The Gentleman-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_TheGentleman</defName>
    <label>The Gentleman</label>
    <description>For those who prefer luxury even on the dusty frontier. Stay cool and stylish while commanding respect.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TheGentleman/TheGentleman</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
    <DevilstrandCloth>75</DevilstrandCloth>
    </costList>
    <tradeability>Buyable</tradeability>
    <tradeTags>
      <li>ComplexClothing</li>
    </tradeTags>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>6800</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierInsulation_Cold>0.40</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
    <SocialImpact>0.20</SocialImpact>
    <Beauty>8</Beauty>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TheGentleman/TheGentleman</wornGraphicPath>
    <useWornGraphicMask>True</useWornGraphicMask>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>RDRApparel</li>
      </tags>
    </apparel>
    <recipeMaker>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
   <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <min>(97, 113, 51)</min>
          <max>(85, 100, 45)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

<!--Marshal Vest-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>RDR_MarshalsVest</defName>
    <label>Marshals Vest</label>
    <description>Wear this vest to show you mean business. It has just enough pockets for your badge and a few extra secrets.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/MarshalsVest/MarshalsVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <costStuffCount>80</costStuffCount>
    <tradeability>None</tradeability>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>5800</WorkToMake>
      <Mass>2.0</Mass>
      <StuffEffectMultiplierArmor>0.80</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.30</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
    <RangedCooldownFactor>-0.05</RangedCooldownFactor>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/MarshalsVest/MarshalsVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
      <li>RDRLawmen</li>
      </tags>
    </apparel>
    <recipeMaker>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
    <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
   <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

