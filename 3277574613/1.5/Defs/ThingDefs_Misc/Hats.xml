<Defs>

<!--Pinkerton Deputy Hat-->
  <ThingDef ParentName="HatMakeableBase">
    <defName>RDR_PinkertonDeputyHat</defName>
    <label>Pinkerton Deputy Hat</label>
    <description>Not quite as imposing as a sheriff's hat, but it still says, "I'm here to keep the peace." Wear it with pride and watch out for those bandits.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PinkertonDeputyHat/PinkertonDeputyHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.0</drawSize>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <costList>
      <Plasteel>25</Plasteel>
    </costList>
    <tradeability>None</tradeability>
    <statBases>
   <!--Slightly better than a flak helmet-->
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>1.2</Mass>
      <StuffEffectMultiplierArmor>0.6</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.60</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ArrestSuccessChance>0.5</ArrestSuccessChance>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PinkertonDeputyHat/PinkertonDeputyHat</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <canBeGeneratedToSatisfyWarmth>True</canBeGeneratedToSatisfyWarmth>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
    </apparel>
    <recipeMaker>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>


