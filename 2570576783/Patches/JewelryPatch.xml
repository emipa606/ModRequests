<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Jewelry</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="CharmOfWarding"]/apparel</xpath>
                    <value>
                        <apparel>
                            <countsAsClothingForNudity>false</countsAsClothingForNudity>
                            <careIfWornByCorpse>false</careIfWornByCorpse>
                            <careIfDamaged>false</careIfDamaged>
                            <wearPerDay>0</wearPerDay>
                            <bodyPartGroups>
                                <li>Ears</li>
                            </bodyPartGroups>
                            <layers>
                                <li>Accessories</li>
                            </layers>
                            <tags>
                                <li>Jewelry</li>
                            </tags>
                        </apparel>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="ShadowAmulet"]/apparel</xpath>
                    <value>
                        <apparel>
                            <countsAsClothingForNudity>false</countsAsClothingForNudity>
                            <careIfWornByCorpse>false</careIfWornByCorpse>
                            <careIfDamaged>false</careIfDamaged>
                            <wearPerDay>0</wearPerDay>
                            <bodyPartGroups>
                                <li>Neck</li>
                            </bodyPartGroups>
                            <layers>
                                <li>Accessories</li>
                            </layers>
                            <tags>
                                <li>Jewelry</li>
                            </tags>
                        </apparel>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>
