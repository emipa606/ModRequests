<Defs>
    <ThingDef Name="BaseBoneWeapon" ParentName="BaseWeapon" Abstract="True">
        <defName>BaseBoneWeapon</defName>
        <techLevel>Neolithic</techLevel>
            <smeltable>false</smeltable>
            <burnableByRecipe>true</burnableByRecipe>
            <thingCategories>
                <li>WeaponsMelee</li>
            </thingCategories>
        <weaponTags>
            <li>NeolithicMeleeBone</li>
        </weaponTags>
            <weaponClasses>
                <li>Melee</li>
                <li>Neolithic</li>
            </weaponClasses>
