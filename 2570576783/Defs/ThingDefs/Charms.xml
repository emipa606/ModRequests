<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="ApparelBase">
        <defName>CharmOfWarding</defName>
        <label>charm of warding</label>
        <description>An enchanted charm that can stop a limited amount of projectiles. However, it does not protect from melee attacks or heat. It also prevents the user from firing any projectiles out of it.</description>
        <techLevel>Neolithic</techLevel>
        <thingClass>PorousBoat.BloodAndBones.CharmOfWarding</thingClass>
        <graphicData>
            <texPath>charm</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(0.5,0.5)</drawSize>
        </graphicData>
        <tickerType>Normal</tickerType>
        <statBases>
            <Mass>0.5</Mass>
            <WorkToMake>2500</WorkToMake>
            <Flammability>0.3</Flammability>
            <EnergyShieldRechargeRate>0.08</EnergyShieldRechargeRate>
            <EnergyShieldEnergyMax>0.5</EnergyShieldEnergyMax>
            <EquipDelay>1</EquipDelay>
        </statBases>
        <thingSetMakerTags>
            <li>RewardStandardMidFreq</li>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <costList>
            <Skull>5</Skull>
        </costList>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
              <li>BoneCarvingBench</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
        </recipeMaker>
        <thingCategories>
            <li>ApparelUtility</li>
        </thingCategories>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <careIfDamaged>false</careIfDamaged>
            <wearPerDay>0</wearPerDay>
            <bodyPartGroups>
                <li>Waist</li>
            </bodyPartGroups>
            <layers>
                <li>Belt</li>
            </layers>
            <tags>
                <li>BeltDefense</li>
            </tags>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="ApparelBase">
        <defName>ShadowAmulet</defName>
        <label>shadow amulet</label>
        <description>A small amulet that lets the user move a short distance as a shadow at the cost of inflicting pain on themselves.</description>
        <techLevel>Neolithic</techLevel>
        <graphicData>
            <texPath>amulet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(0.5,0.5)</drawSize>
        </graphicData>
        <verbs>
            <li>
                <verbClass>PorousBoat.BloodAndBones.Verb_ShadowStep</verbClass>
                <label>shadowstep</label>
                <violent>false</violent>
                <hasStandardCommand>true</hasStandardCommand>
                <onlyManualCast>True</onlyManualCast>
                <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
                <warmupTime>0.1</warmupTime>
                <requireLineOfSight>true</requireLineOfSight>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                    <canTargetPawns>false</canTargetPawns>
                    <canTargetBuildings>false</canTargetBuildings>
                </targetParams>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_Reloadable">
                <maxCharges>1</maxCharges>
                <hotKey>Misc4</hotKey>
                <chargeNoun>shadowstep</chargeNoun>
                <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
            </li>
        </comps>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
              <li>BoneCarvingBench</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
        </recipeMaker>
        <statBases>
            <Mass>0.4</Mass>
            <WorkToMake>25000</WorkToMake>
            <Flammability>0.3</Flammability>
            <EquipDelay>1</EquipDelay>
            <JumpRange>10</JumpRange>
        </statBases>
        <thingSetMakerTags>
            <li>RewardStandardMidFreq</li>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <costList>
            <Skull>7</Skull>
        </costList>
        <thingCategories>
            <li>ApparelUtility</li>
        </thingCategories>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <careIfDamaged>false</careIfDamaged>
            <wearPerDay>0</wearPerDay>
            <bodyPartGroups>
                <li>Waist</li>
            </bodyPartGroups>
            <layers>
                <li>Belt</li>
            </layers>
            <tags>
                <li>PackJump</li>
            </tags>
        </apparel>
    </ThingDef>
    <HediffDef>
        <defName>ShadowStepSickness</defName>
        <label>shadow poison</label>
        <description>I feel as if a part of my soul has been damaged</description>
        <hediffClass>PorousBoat.BloodAndBones.Hediff_ShadowStepSickness</hediffClass>
        <initialSeverity>0.01</initialSeverity>
        <lethalSeverity>0.75</lethalSeverity>
        <isBad>true</isBad>
        <stages>
            <li>
                <label>initial</label>
                <lifeThreatening>false</lifeThreatening>
                <painOffset>0.05</painOffset>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.20</minSeverity>
                <lifeThreatening>false</lifeThreatening>
                <painOffset>0.25</painOffset>
            </li>
            <li>
                <label>intermediate</label>
                <minSeverity>0.35</minSeverity>
                <lifeThreatening>false</lifeThreatening>
                <painOffset>0.45</painOffset>
            </li>
            <li>
                <label>major</label>
                <minSeverity>0.5</minSeverity>
                <lifeThreatening>false</lifeThreatening>
                <painOffset>0.65</painOffset>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.65</minSeverity>
                <lifeThreatening>true</lifeThreatening>
                <painOffset>0.85</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <label>fatal</label>
                <minSeverity>0.75</minSeverity>
            </li>
        </stages>
    </HediffDef>

    <ThingDef ParentName="PawnFlyerBase">
        <defName>PawnShadowStepper</defName>
        <thingClass>PorousBoat.BloodAndBones.PawnShadowStepper</thingClass>
        <pawnFlyer>
            <flightDurationMin>0.1</flightDurationMin>
            <flightSpeed>50</flightSpeed>
            <flightEffecterDef>ShadowStepEffect</flightEffecterDef>
            <soundLanding>ShadowStepLand</soundLanding>
        </pawnFlyer>
    </ThingDef>
</Defs>
