        <relicChance>3</relicChance>
        <weaponTags>
            <li>Bloodlink</li>
        </weaponTags>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="PorousBoat.BloodAndBones.CompProperties_BloodlinkWeapon">
                <biocodeOnEquip>true</biocodeOnEquip>
            </li>
            <li Class="CompProperties_GeneratedName">
                <nameMaker>NamerWeaponBloodlink</nameMaker>
