<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="BiocodeReformatter" ParentName="ResourceBase">
    <defName>BiocodeReformatter</defName>
    <thingClass>ThingWithComps</thingClass>
    <label>biocode reformatter</label>
    <description>A one-use device that rewrites the biocode on weapons or armor to match a new user. By taking a biological sample and expending a massive energy charge, the reformatter overrides the equipment's hard-coded identity lock, allowing it to be used by another person. The energy required to break these restrictions burns out the device after use.</description>
    <tickerType>Rare</tickerType>
    <useHitPoints>true</useHitPoints>
    <canDeteriorateUnspawned>true</canDeteriorateUnspawned>
    <deteriorateFromEnvironmentalEffects>false</deteriorateFromEnvironmentalEffects>
    <graphicData>
      <texPath>HarderGearLooting_BiocodeReformatter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.25, 1.25)</drawSize>
    </graphicData>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.5</Mass>
      <Flammability>0</Flammability>
      <MarketValue>400</MarketValue>
      <DeteriorationRate>5</DeteriorationRate>
    </statBases>
    <techLevel>Ultra</techLevel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <stackLimit>1</stackLimit>
    <tradeNeverGenerateStacked>true</tradeNeverGenerateStacked>
    <category>Item</category>
    <drawerType>MapMeshOnly</drawerType>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <healthAffectsPrice>false</healthAffectsPrice>
    <pathCost>14</pathCost>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use {0_label}</useLabel>
        <useDuration>0</useDuration>
        <showUseGizmo>true</showUseGizmo>
      </li>
      <li Class="CompProperties_Targetable">
        <compClass>HarderGearLooting.CompTargetable_BiocodedItem</compClass>
      </li>
      <li Class="HarderGearLooting.CompProperties_BiocodeReformat"/>
      <li Class="CompProperties_UseEffectDestroySelf" /> 
    </comps>
  </ThingDef>
</Defs>