<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<RecipeDef>
		<defName>CreateBeeButter_H</defName>
		<label>create bee butter</label>
		<description>Create a glob of homemade bee butter using pollen from flowers and honey.</description>
		<jobString>Making BeeButter</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>900</workAmount>
		<recipeUsers>
			<li>RB_Beekeeping_Workbench_Building</li>	
		</recipeUsers>	
		<ingredients>

			<li>
				<filter>
					<categories>
						<li>RB_Honeys</li>
					</categories>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
          <thingDefs>
            <li>RawFlowers</li>
          </thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
				<categories>
					<li>RB_Honeys</li>				
				</categories>
	  <thingDefs>
        <li>RawFlowers</li>
      </thingDefs>
		</fixedIngredientFilter>
		<products>
			<BeeButter>25</BeeButter>
		</products>
    <workSkill>Cooking</workSkill>
	</RecipeDef>
	
	<RecipeDef>
		<defName>CreateBeeButter_F</defName>
		<label>create bee butter</label>
		<description>Create a glob of homemade bee butter out of pollen and nectar, both extracted from flowers.</description>
		<jobString>Making BeeButter</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
		<recipeUsers>
			<li>RB_Beekeeping_Workbench_Building</li>	
		</recipeUsers>	
		<ingredients>
			<li>
				<filter>
          <thingDefs>
            <li>RawFlowers</li>
          </thingDefs>
				</filter>
				<count>100</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
	  <thingDefs>
        <li>RawFlowers</li>
      </thingDefs>
		</fixedIngredientFilter>
		<products>
			<BeeButter>25</BeeButter>
		</products>
    <workSkill>Cooking</workSkill>
	</RecipeDef>	
	
</Defs>