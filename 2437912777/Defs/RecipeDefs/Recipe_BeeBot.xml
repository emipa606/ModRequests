<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<RecipeDef>
		<defName>CreateBeeBot</defName>
		<label>create beebot</label>
		<description>Create a BeeBot out of an AI persona core.</description>
		<jobString>Building bees</jobString>
				<allowMixingIngredients>true</allowMixingIngredients>
    <researchPrerequisite>RB_SpacerBeeGirls</researchPrerequisite>
        <workAmount>50000</workAmount>
        <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<recipeUsers>
			<li>ScrapMutator</li>	
		</recipeUsers>	
		<ingredients>
			<li>
				<filter>
          <thingDefs>
            <li>UraniumH</li>
          </thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
				</filter>
				<count>200</count>
			</li>
			<li>
				<filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
          <thingDefs>
            <li>RB_ComponentBioInterface</li>
          </thingDefs>
				</filter>
				<count>7</count>
			</li>	
			<li>
				<filter>
          <thingDefs>
            <li>AIPersonaCore</li>
          </thingDefs>
				</filter>
				<count>1</count>
			</li>				
		</ingredients>
		<fixedIngredientFilter>
	  <thingDefs>
        <li>UraniumH</li>
	    <li>Steel</li>
        <li>ComponentSpacer</li>
	    <li>ComponentIndustrial</li>	
	    <li>AIPersonaCore</li>		
      </thingDefs>
		</fixedIngredientFilter>
		<products>
			<EggBeeBot>1</EggBeeBot>
		</products>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
</RecipeDef>	
	
  <RecipeDef>
    <defName>RepairBeeBotPart</defName>
    <label>Repair Part</label>
    <description>Use steel to rebuild a beebot body.</description>
    <jobString>Repairing.</jobString>
    <workerClass>Recipe_InstallNaturalBodyPart</workerClass>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <skillRequirements>
      <Crafting>4</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>	
    <workAmount>4000</workAmount>	
    <recipeUsers>
      <li>Human_BeeBot</li>
    </recipeUsers>	
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>400</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>BBTorso</li>
	  <li>Stinger</li>
	  <li>BB_FuelSlot</li>
	  <li>ReplicaStomach</li>
	  <li>ReplicaHeart</li>
	  <li>ReplicaLung</li>
	  <li>ReplicaKidney</li>
	  <li>ReplicaLiver</li>
	  <li>BBNeck</li>
	  <li>Head</li>
	  <li>PheromoneSensor</li>
	  <li>BBEye</li>
	  <li>BeeAntenna</li>
	  <li>BBNose</li>
	  <li>BBJaw</li>
	  <li>BBShoulder</li>
	  <li>BBArm</li>
	  <li>BBHand</li>
	  <li>BBFinger</li>
	  <li>Waist</li>
	  <li>Foot</li>
	  <li>BBLeg</li>	  
    </appliedOnFixedBodyParts>
  </RecipeDef>
  
</Defs>