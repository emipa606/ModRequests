<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThoughtDef>
      <defName>IMJ_LavishSippy</defName>
      <thoughtClass>Thought_Memory</thoughtClass>
      <durationDays>1</durationDays>
      <stackLimit>5</stackLimit>
      <requiredGenes>
        <li>Hemogenic</li>
      </requiredGenes>
      <stages>
        <li>
          <label>Mmmm Sippy Sippy!</label>
          <description>I have ingested live hemogen, I am a god among mere mortals and immortality runs through my very veins!</description>
          <baseMoodEffect>12</baseMoodEffect>
        </li>
      </stages>
      <replaceThoughts>
				<li>IMJ_FineSippy</li>
				<li>IMJ_BadSippy</li>
        <li>AteLavishMeal</li>
        <li>AteFineMeal</li>
      </replaceThoughts>
  </ThoughtDef>

	<ThoughtDef>
		<defName>IMJ_FineSippy</defName>
		<thoughtClass>Thought_Memory</thoughtClass>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<requiredGenes>
			<li>Hemogenic</li>
		</requiredGenes>
		<stages>
			<li>
				<label>Cold Sippy</label>
				<description>I ingested a hemogen pack. It nourished my body and my soul, but it was as cold as my heart.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
		<replaceThoughts>
			<li>IMJ_BadSippy</li>
			<li>AteLavishMeal</li>
			<li>AteFineMeal</li>
		</replaceThoughts>
	</ThoughtDef>

	<ThoughtDef>
		<defName>IMJ_BadSippy</defName>
		<thoughtClass>Thought_Memory</thoughtClass>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<requiredGenes>
			<li>Hemogenic</li>
		</requiredGenes>
		<stages>
			<li>
				<label>Blergh! Bad Sippy....</label>
				<description>I will continue to subsist, but at what cost? Can we call this living anymore?</description>
				<baseMoodEffect>-12</baseMoodEffect>
			</li>
		</stages>
		<replaceThoughts>
			<li>IMJ_LavishSippy</li>
			<li>IMJ_FineSippy</li>
			<li>AteLavishMeal</li>
			<li>AteFineMeal</li>
		</replaceThoughts>
	</ThoughtDef>
</Defs>
