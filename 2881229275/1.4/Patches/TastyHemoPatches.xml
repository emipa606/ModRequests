<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <operations>

<!-- Modify the HemogenPack Nutrition -->
<li Class="PatchOperationReplace">
<xpath>Defs/ThingDef[defName="HemogenPack"]/statBases/Nutrition</xpath>
<value> <Nutrition>1</Nutrition> </value>
</li>
<!-- Modify the HemogenPack stackLimit -->
<li Class="PatchOperationReplace">
<xpath>Defs/ThingDef[defName="HemogenPack"]/stackLimit</xpath>
<value> <stackLimit>10</stackLimit> </value>
</li>
<!-- Add the custom tasteThought to the HemogenPack -->
<li Class="PatchOperationAdd">
<xpath>Defs/ThingDef[defName="HemogenPack"]/ingestible</xpath>
<value> <tasteThought>IMJ_FineSippy</tasteThought> </value>
</li>

    </operations>
  </Operation>
</Patch>
