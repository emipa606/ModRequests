	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="ChargeAmmoRecipeBase">
		<defName>MakeAmmo_EltexLight</defName>
		<label>make light eltex capacitor x500</label>
		<description>Craft 500 light eltex capacitors.</description>
		<jobString>Making light eltex capacitors.</jobString>
		<ingredients>
		<li>
			<filter>
			<thingDefs>
				<li>Plasteel</li>
			</thingDefs>
			</filter>
			<count>6</count>
		</li>
		<li>
			<filter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
			</filter>
			<count>4</count>
		</li>	  
		<li>
			<filter>
			<thingDefs>
				<li>ComponentIndustrial</li>
			</thingDefs>
			</filter>
			<count>6</count>
		</li>
		</ingredients>
		<fixedIngredientFilter>
		<thingDefs>
			<li>Plasteel</li>
			<li>Steel</li>		
			<li>ComponentIndustrial</li>
		</thingDefs>
		</fixedIngredientFilter>
		<products>
		<Ammo_EltexLight>500</Ammo_EltexLight>
		</products>
		<workAmount>7500</workAmount>		
	</RecipeDef>

