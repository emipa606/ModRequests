<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TerrainDef Name="VaultFloorBase" Abstract="True">
    <layerable>true</layerable>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
    </affordances>
    <statBases>
      <WorkToBuild>135</WorkToBuild>
    </statBases>
    <designationCategory>Floors</designationCategory>
    <fertility>0</fertility>
    <constructEffect>ConstructDirt</constructEffect>
 <!--   <acceptTerrainSourceFilth>True</acceptTerrainSourceFilth> -->
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </TerrainDef>

  

  <!-- ================= Vault Flooring ================= -->

  	<TerrainDef ParentName="VaultFloorBase">
		<defName>VaultFloor01a</defName>
		<label>vault concrete</label>
		<description>Concrete flooring found in vaults. Functions identically to normal concrete, but without the beauty debuff.</description>
		<texturePath>Terrain/Surfaces/Concrete</texturePath>
		<edgeType>Hard</edgeType>
		<renderPrecedence>70</renderPrecedence>
		<statBases>
			<WorkToBuild>100</WorkToBuild>
		</statBases>
		<costList>
			<Steel>1</Steel>
		</costList>
	<researchPrerequisites>
		<li>VaultConstruction</li>
	</researchPrerequisites>
	</TerrainDef>

