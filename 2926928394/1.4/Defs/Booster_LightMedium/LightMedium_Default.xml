<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Building-->
	<ThingDef ParentName="MechUpgradePodBase_Light">
		<defName>MechanoidUpgradePod_LightMedium_Default</defName>
		<researchPrerequisites>
			<li>HighMechtech</li>
		</researchPrerequisites>
		<building>
			<subcoreScannerOutputDef>Wastepack</subcoreScannerOutputDef>
			<subcoreScannerStartEffect>SubcoreSoftscanner_Start</subcoreScannerStartEffect>
			<subcoreScannerWorking>SubcoreSoftscanner_Working</subcoreScannerWorking>
			<subcoreScannerComplete>SubcoreSoftscanner_Complete</subcoreScannerComplete>
			<subcoreScannerHediff>BMU_MechBoost_Armor_LightMedium_Default</subcoreScannerHediff>
			<subcoreScannerTicks>20000</subcoreScannerTicks>
			<!--8 hours-->
			<ai_chillDestination>false</ai_chillDestination>
			<buildingTags>
				<li>Biotech</li>
			</buildingTags>
			<subcoreScannerFixedIngredients>
				<li>
					<filter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</filter>
					<count>10</count>
				</li>
				<li>
					<filter>
						<thingDefs>
							<li>Plasteel</li>
						</thingDefs>
					</filter>
					<count>5</count>
				</li>
				<li>
					<filter>
						<thingDefs>
							<li>Uranium</li>
						</thingDefs>
					</filter>
					<count>5</count>
				</li>
				<li>
					<filter>
						<thingDefs>
							<li>ComponentIndustrial</li>
						</thingDefs>
					</filter>
					<count>2</count>
				</li>
			</subcoreScannerFixedIngredients>
		</building>
		<designationCategory>Biotech</designationCategory>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<comps>
			<li Class="CompProperties_MechUpgraderExtraProps">
				<ForWeightClass>Light</ForWeightClass>
				<ForWeightClassSecondary>Medium</ForWeightClassSecondary>
				<WeightMultiplier>2</WeightMultiplier>
				<WeightMultiplierString>2</WeightMultiplierString>
				<!--affects stuff like the amount of wastepacks produced and....that's kinda it-->
				<ModeLabel>Standard</ModeLabel>
			</li>
		</comps>
	</ThingDef>
	<!--Hediff-->
	<HediffDef>
		<defName>BMU_MechBoost_Armor_LightMedium_Default</defName>
		<label>standard upgrade</label>
		<description>A basic and relatively cheap mechanoid upgrade that improves its overall performance.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(161,206,243)</defaultLabelColor>
		<stages>
			<li>
				<label>level 1</label>
				<minSeverity>1</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
					<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>level 2</label>
				<minSeverity>2</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
					<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>level 3</label>
				<minSeverity>3</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.15</ArmorRating_Sharp>
					<ArmorRating_Blunt>0.15</ArmorRating_Blunt>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.15</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>level 4</label>
				<minSeverity>4</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
					<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>level 5</label>
				<minSeverity>5</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.25</ArmorRating_Sharp>
					<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.25</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.25</offset>
					</li>
				</capMods>
			</li>	
		</stages>
		<initialSeverity>1</initialSeverity>
		<minSeverity>1</minSeverity>
		<maxSeverity>5</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_DisappearsOnDeathAndSpawnItem_BMU">
				<itemToSpawn>BMU_UpgradeChunk_Default</itemToSpawn>
			</li>
		</comps>
	</HediffDef>
	<!--Chunk-->
	<ThingDef ParentName="BMU_UpgradeChunkBase">
		<defName>BMU_UpgradeChunk_Default</defName>
		<label>Standard mech upgrade slag</label>
		<description>An amalgamation of melted, smashed-up metals, broken-down components and inactive mechanites. While completely useless in its current form, the valuable metals within it can be separated and recovered with proper tools.</description>
		<graphicData>
			<texPath>Things/Items/BMU_UpgradeSlag</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Mass>14</Mass>
		</statBases>
		<soundDrop>ChunkSlag_Drop</soundDrop>
		<stackLimit>10</stackLimit>
		<thingCategories>
			<li>BMU_MechanoidUpgradeSlag</li>
		</thingCategories>
		<smeltable>true</smeltable>
		<smeltProducts>
			<Steel>27</Steel>
			<Plasteel>3</Plasteel> <!--Extra base resources from a broken-down advanced component: 32 steel, 10 plasteel and 3 gold, roughly 60-75% of the base cost-->
			<Uranium>3</Uranium>
		</smeltProducts>
	</ThingDef>
</Defs>