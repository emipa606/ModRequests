<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <HediffDef Name="VillageStandaloneBase" Abstract = "True">
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="HediffCompProperties_DisappearsOnDeath"/>
      <li>
        <compClass>VillageStandalone.HediffComp_RemoveUponGettingUp</compClass>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="VillageStandaloneBase">
    <defName>VillageStandalone_ComfyBothbutlesser</defName>
    <label>In a House</label>
    <isBad>false</isBad>
    <everCurableByItem>false</everCurableByItem>
    <defaultLabelColor>(20, 255, 20)</defaultLabelColor>
    <description>At least it keeps temperature.</description>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMin>-10</ComfyTemperatureMin>
          <ComfyTemperatureMax>10</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="VillageStandaloneBase">
    <defName>VillageStandalone_ComfyBoth</defName>
    <label>Comfy House</label>
    <isBad>false</isBad>
    <everCurableByItem>false</everCurableByItem>
    <defaultLabelColor>(20, 255, 20)</defaultLabelColor>
    <description>It's a comfortable temperature inside.</description>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMin>-20</ComfyTemperatureMin>
          <ComfyTemperatureMax>20</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="VillageStandaloneBase">
    <defName>VillageStandalone_ComfyCold</defName>
    <label>Warm House</label>
    <isBad>false</isBad>
    <everCurableByItem>false</everCurableByItem>
    <defaultLabelColor>(20, 255, 20)</defaultLabelColor>
    <description>I feel protected from the cold</description>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMin>-20</ComfyTemperatureMin>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="VillageStandaloneBase">
    <defName>VillageStandalone_ComfyHot</defName>
    <label>Cool House</label>
    <isBad>false</isBad>
    <everCurableByItem>false</everCurableByItem>
    <defaultLabelColor>(20, 255, 20)</defaultLabelColor>
    <description>it feels cool inside the house.</description>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMax>20</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>
