<?xml version="1.0" encoding="utf-8"?>
<Defs>

<!-- Arquebus -->
  <ThingDef ParentName="BaseBullet">
    <defName>KIT_Bullet_Arquebus</defName>
    <label>arquebus bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Rifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <armorPenetrationBase>0.5</armorPenetrationBase>
      <speed>50</speed>
    </projectile>
  </ThingDef>
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>KIT_Gun_Arquebus</defName>
    <label>arquebus</label>
    <description>An early form of muzzle loading firearm, this black powder weapon had the simplest of designs which used a burning match to ignite its powder.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/WeaponRanged/Arquebus</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>RangedLight</li>
      <li>ShortShots</li>
    </weaponClasses>
    <recipeMaker>
	  <recipeUsers>
		  <li>FueledSmithy</li>
		  <li>ElectricSmithy</li>
	  </recipeUsers>
      <researchPrerequisite>KIT_Blackpowder</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>1.6</Mass>
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>4.8</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>20</Steel>
      <WoodLog>20</WoodLog>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>KIT_Bullet_Arquebus</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>14.9</range>
        <soundCast>KIT_Arquebus</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
        <li>SimpleGun</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

