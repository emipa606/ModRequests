  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>KIT_Gun_BayonetMusket</defName>
    <label>bayonet musket</label>
    <description>A later era design of a flintlock musket, though smaller in caliber then its arquebus predecessor, the musket had far better accuracy and range, the addition of the bayonet also made it rather lethal in combat often matching the devastation of short spears.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/WeaponRanged/BayonetMusket</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>RangedHeavy</li>
      <li>LongShots</li>
    </weaponClasses>
    <recipeMaker>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite>KIT_LineInfantry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <Mass>2</Mass>
      <AccuracyTouch>0.30</AccuracyTouch>
      <AccuracyShort>0.35</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>4.8</RangedWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>45</equippedAngleOffset>
    <costList>
      <Steel>40</Steel>
      <WoodLog>40</WoodLog>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>KIT_Bullet_BayonetMusket</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>24.9</range>
        <soundCast>KIT_BayonetMusket</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
        <li>SimpleGun</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>bayonet</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

