<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FleckDef ParentName="FleckBase_Thrown">
		<defName>AirPuffShortlived</defName>
		<graphicData>
			<texPath>Things/Mote/AirPuff</texPath>
			<renderInstanced>true</renderInstanced>
		</graphicData>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<fadeInTime>0.05</fadeInTime>
		<solidTime>0.1</solidTime>
		<fadeOutTime>0.2</fadeOutTime>
	</FleckDef>

	<SoundDef>
		<defName>HissPipeLeak</defName>
		<context>MapOnly</context>
		<maxSimultaneous>1</maxSimultaneous>
		<priorityMode>PrioritizeNearest</priorityMode>
		<subSounds>
			<li>
				<name>Main hiss</name>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>Misc/Hiss/HissSmall</clipPath>
					</li>
				</grains>
				<volumeRange>15~15</volumeRange>
				<pitchRange>1.042391~1.021195</pitchRange>
				<paramMappings>
					<li>
						<inParam Class="SoundParamSource_SourceAge">
							<timeType>Ticks</timeType>
						</inParam>
						<outParam Class="SoundParamTarget_Pitch">
							<pitchType>Multiply</pitchType>
						</outParam>
						<paramUpdateMode>Constant</paramUpdateMode>
						<curve>
							<points>
								<li>
									<loc>
										<x>0</x>
										<y>0.8</y>
									</loc>
								</li>
								<li>
									<loc>
										<x>360</x>
										<y>1</y>
									</loc>
								</li>
								<li>
									<loc>
										<x>900</x>
										<y>1.25</y>
									</loc>
								</li>
								<li>
									<loc>
										<x>2400</x>
										<y>1.5</y>
									</loc>
								</li>
							</points>
						</curve>
					</li>
				</paramMappings>
				<sustainLoopDurationRange>5~5</sustainLoopDurationRange>
				<sustainIntervalRange>-2.5~-2.5</sustainIntervalRange>
				<sustainAttack>2.5</sustainAttack>
				<sustainRelease>2.5</sustainRelease>
			</li>
		</subSounds>
	</SoundDef>

	<EffecterDef>
		<defName>LizionPipeLeakMajor</defName>
		<children>
			<li>
				<subEffecterClass>SubEffecter_SoundTriggered</subEffecterClass>
				<soundDef>HissPipeLeak</soundDef>
				<spawnLocType>OnSource</spawnLocType>
			</li>
			<li>
				<subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
				<positionRadius>0.1</positionRadius>
				<fleckDef>AirPuffShortlived</fleckDef>
				<burstCount>2~5</burstCount>
				<speed>5~6</speed>
				<scale>0.8~1.2</scale>
				<spawnLocType>OnSource</spawnLocType>
				<positionOffset>(0,0,0.15)</positionOffset>
			</li>
			<li>
				<subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
				<positionRadius>0.2</positionRadius>
				<fleckDef>AirPuffShortlived</fleckDef>
				<burstCount>20~30</burstCount>
				<color>(1,1,1,0.2)</color>
				<speed>10~15</speed>
				<scale>1.8~2.2</scale>
				<rotation>0~359</rotation>
				<spawnLocType>OnSource</spawnLocType>
				<fleckUsesAngleForVelocity>true</fleckUsesAngleForVelocity>
				<angle>0~359</angle>
				<positionOffset>(0,0,0.15)</positionOffset>
			</li>
		</children>
	</EffecterDef>

	<EffecterDef>
		<defName>LizionCoolerLow</defName>
		<children>
			<li>
				<subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
				<positionRadius>0.1</positionRadius>
				<fleckDef>AirPuffShortlived</fleckDef>
				<burstCount>1</burstCount>
				<speed>5~6</speed>
				<scale>0.8~1.2</scale>
				<spawnLocType>OnSource</spawnLocType>
				<positionOffset>(0,0,0.15)</positionOffset>
			</li>
		</children>
	</EffecterDef>

	<EffecterDef>
		<defName>LizionCoolerHigh</defName>
		<children>
			<li>
				<subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
				<positionRadius>0.1</positionRadius>
				<fleckDef>AirPuffShortlived</fleckDef>
				<burstCount>1</burstCount>
				<speed>5~6</speed>
				<scale>0.8~1.2</scale>
				<spawnLocType>OnSource</spawnLocType>
				<positionOffset>(0,0,0.15)</positionOffset>
			</li>
			<li>
				<subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
				<positionRadius>0.2</positionRadius>
				<fleckDef>AirPuffShortlived</fleckDef>
				<burstCount>5~6</burstCount>
				<color>(1,1,1,0.2)</color>
				<speed>5~10</speed>
				<scale>1.8~2.2</scale>
				<rotation>0~359</rotation>
				<spawnLocType>OnSource</spawnLocType>
				<fleckUsesAngleForVelocity>true</fleckUsesAngleForVelocity>
				<angle>0~359</angle>
				<positionOffset>(0,0,0.15)</positionOffset>
			</li>
		</children>
	</EffecterDef>
</Defs>
