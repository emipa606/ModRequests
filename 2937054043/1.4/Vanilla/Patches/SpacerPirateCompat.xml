<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Spacertech Raiders for Outlanders and Pirates</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BDP_PlasmaLMG"]/weaponTags</xpath>
					<value>
						<li>GunSPHeavy</li>
						<li>GunSEAssault</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BDP_PlasmaSniper"]/weaponTags</xpath>
					<value>
						<li>GunSPSniper</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BDP_PlasmaCannon"]/weaponTags</xpath>
					<value>
						<li>GunSPDemo</li>
						<li>GunSPLord</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BDP_PlasmaCarbine"]/weaponTags</xpath>
					<value>
						<li>GunSPCharge</li>
						<li>GunSMShooter</li>
					</value>
				</li>


				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BDP_PlasmaSMG"]/weaponTags</xpath>
					<value>
						<li>GunSPCharge</li>
						<li>GunSEAssault</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BDP_PlasmaShotgun"]/weaponTags</xpath>
					<value>
						<li>GunSPCharge</li>
						<li>GunSEAssault</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BDP_PlasmaPistol"]/weaponTags</xpath>
					<value>
						<li>GunSPCharge</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Helixien Gas Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VHGE_HelixienPump"]/comps</xpath>
					<value>
						<li Class="PipeSystem.CompProperties_ResourceTrader">
							<pipeNet>BDP_LizionNetwork</pipeNet>
							<consumptionPerTick>-0.03</consumptionPerTick>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>