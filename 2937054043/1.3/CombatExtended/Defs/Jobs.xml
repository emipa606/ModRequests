<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<JobDef>
		<defName>BDP_JobDefRefillFromFiller</defName>
		<driverClass>BDsPlasmaWeapon.JobDriver_ReloadFromFiller</driverClass>
		<reportString>reloading TargetA from TargetB.</reportString>
		<suspendable>false</suspendable>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>

	<JobDef>
		<defName>BDP_FlickLizionCooler</defName>
		<driverClass>BDsPlasmaWeapon.JobDriver_FlickLizionCooler</driverClass>
		<reportString>flicking TargetA.</reportString>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>

	<JobDef>
		<defName>BDP_TriggerLizionPopper</defName>
		<driverClass>JobDriver_UseItem</driverClass>
		<reportString>triggering lizion popper.</reportString>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>

	<JobDef>
		<defName>BDP_Extinguish</defName>
		<driverClass>BDsPlasmaWeapon.JobDriver_ExtinguishFireWithWeapon</driverClass>
		<reportString>extinguishing TargetA.</reportString>
		<alwaysShowWeapon>true</alwaysShowWeapon>
		<casualInterruptible>false</casualInterruptible>
		<collideWithPawns>true</collideWithPawns>
	</JobDef>
</Defs>