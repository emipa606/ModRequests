<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="HatMakeableBase">
		<defName>TRAHS_Dealmaker</defName>
		<label>dealmaker</label>
		<description>Fashionable pink and yellow glasses. Greatly increases the wearer's social impact and negotiation ability.</description>
		<graphicData>
			<texPath>TRAHS/Things/Pawn/Humanlike/Dealmaker/Dealmaker</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0</generateCommonality>
		<costList>
			<Silver>4</Silver>
		</costList>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
			<Mass>0.01</Mass>
			<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<Insulation_Cold>0</Insulation_Cold>
 			<Insulation_Heat>0</Insulation_Heat>
            <EquipDelay>0.4</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>0.80</SocialImpact>
			<NegotiationAbility>0.80</NegotiationAbility>
			<TradePriceImprovement>0.80</TradePriceImprovement>
		</equippedStatOffsets>
    <thingCategories Inherit='False'>
      <li>Headgear</li>
    </thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Eyes</li>
			</bodyPartGroups>
			<wornGraphicPath>TRAHS/Things/Pawn/Humanlike/Dealmaker/Dealmaker</wornGraphicPath>
			<hatRenderedFrontOfFace>false</hatRenderedFrontOfFace>
			<forceRenderUnderHair>true</forceRenderUnderHair>
      <layers>
        <li>EyeCover</li>
      </layers>
		</apparel>
		<recipeMaker>
			<skillRequirements>
				<Crafting>5</Crafting>
                <Social>5</Social>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
    </ThingDef>

    <ThingDef ParentName="HatMakeableBase">
		<defName>TRAHS_Maker</defName>
		<label>maker</label>
		<description>Fashionable shaded glasses. Very slightly increases the wearer's social impact and negotiation ability.</description>
		<graphicData>
			<texPath>TRAHS/Things/Pawn/Humanlike/Maker/Maker</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.09</generateCommonality>
		<costList>
			<Steel>20</Steel>
		</costList>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>800</WorkToMake>
			<Mass>0.01</Mass>
			<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<Insulation_Cold>0</Insulation_Cold>
 			<Insulation_Heat>0</Insulation_Heat>
            <EquipDelay>0.4</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>0.05</SocialImpact>
			<NegotiationAbility>0.05</NegotiationAbility>
			<TradePriceImprovement>0.05</TradePriceImprovement>
		</equippedStatOffsets>
    <thingCategories Inherit='False'>
      <li>Headgear</li>
    </thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Eyes</li>
			</bodyPartGroups>
			<wornGraphicPath>TRAHS/Things/Pawn/Humanlike/Maker/Maker</wornGraphicPath>
			<hatRenderedFrontOfFace>false</hatRenderedFrontOfFace>
			<forceRenderUnderHair>true</forceRenderUnderHair>
      <layers>
        <li>EyeCover</li>
      </layers>
		</apparel>
		<recipeMaker>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
    </ThingDef>

</Defs>