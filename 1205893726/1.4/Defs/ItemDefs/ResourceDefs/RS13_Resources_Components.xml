  <!-- M.U.L.E Components -->
  
  <ThingDef ParentName="RS13_RobotComponent">
    <defName>RS13_Resource_Component_MULEChassis</defName>
    <label>M.U.L.E Chassis</label>
    <description>The hulking frame of a M.U.L.E bot.</description>
