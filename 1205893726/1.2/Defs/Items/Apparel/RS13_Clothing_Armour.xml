<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="RS13_ArmorMachineableBase">
		<defName>RS13_Clothing_ArmourVest</defName>
		<label>Armour Vest</label>
		<description>Protects moderately against melee and lasers, which are common things to be harmed by. Only covers the torso.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Clothing/Armour/ArmourVest_Suit/armorvest</texPath>
		</graphicData>
		<costList>
			<RS13_SteelSheet>1</RS13_SteelSheet>
		</costList>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<WorkToMake>100</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>3</Mass>
			<Flammability>0</Flammability>
			<ArmorRating_Sharp>0.4</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<Insulation_Heat>5</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<wornGraphicPath>Clothing/Armour/ArmourVest_Suit/armorvest</wornGraphicPath>
			<tags>
				<li>Crew</li>
				<li>ArmourVest</li>
			</tags>
			<defaultOutfitTags>
				<li>Crew</li>
				<li>ArmourVest</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
	
	<ThingDef ParentName="RS13_ArmorMachineableBase">
		<defName>RS13_Clothing_ArmouredCoat</defName>
		<label>Armoured Coat</label>
