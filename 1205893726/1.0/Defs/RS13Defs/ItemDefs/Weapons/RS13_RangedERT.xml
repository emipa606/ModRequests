<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="RS13_BaseERTGun">
    <defName>RS13_Weapon_Ranged_Mateba</defName>
    <label>Mateba</label>
    <description>Similar to the Syndicate revolver but a cooler looking version for NanoTrasen Emergency Response Teams and DeathSquads.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Weapons/Ranged/mateba</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>100</WorkToMake>
      <Mass>0.6</Mass>
      <AccuracyTouch>0.58</AccuracyTouch>
      <AccuracyShort>0.68</AccuracyShort>
      <AccuracyMedium>0.63</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <RS13_SteelSheet>1</RS13_SteelSheet>
    </costList>
    <weaponTags>
	  <li>Mateba</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RS13_Bullet_Mateba</defaultProjectile>
        <warmupTime>1.1</warmupTime>
        <range>25</range>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>RS13_Shot_Bullet</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="RS13_Projectile_BaseBullet">
    <defName>RS13_Bullet_Mateba</defName>
    <label>Mateba round</label>
    <graphicData>
      <texPath>Weapons/Projectiles/bullet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>22</damageAmountBase>
      <speed>65</speed>
    </projectile>
  </ThingDef>
  
