<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
    <defName>RS13_Scenario_NTStationExpedition</defName>
    <label>NanoTrasen Station Expedition</label>
    <description>Your team has been dispatched by NanoTrasen to establish a plasma research station in this backwater sector of space. Due to the many corporate enemies seeking to steal NanoTrasen's company secrets, this station will be a blacksite and your team are deniable assets.</description>
    <scenario>
      <summary>Establish a plasma research station for NanoTrasen.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>PlayerColony</factionDef>
      </playerFaction>
      <parts>

        <!-- Config pages -->
        <li Class="Rimstation13.RS13_ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>12</pawnCount>
          <pawnChoiceCount>12</pawnChoiceCount>
        </li>

        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>DropPods</method>
          <visible>false</visible>
        </li>
        
        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Building_Crate_NTStarter</thingDef>
          <count>1</count>
        </li>
	<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_SteelSheet</thingDef>
          <count>750</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_GlassSheet</thingDef>
          <count>200</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Resource_Processed_SteelRod</thingDef>
          <count>200</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Resource_Processed_Cable</thingDef>
          <count>250</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Resource_Processed_FloorTile</thingDef>
          <count>300</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_PlasmaSheet</thingDef>
          <count>50</count>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Building_APC</thingDef>
		  <count>6</count>
        </li>
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_LaserTurret</thingDef>
          <count>2</count>
        </li>
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Resource_Circuit_AirlockElectronics</thingDef>
          <count>12</count>
        </li>
		
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Food_Snack_Jerky</thingDef>
          <count>50</count>
        </li>
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Food_Snack_Chips</thingDef>
          <count>50</count>
        </li>
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Food_Snack_Raisins</thingDef>
          <count>50</count>
        </li>
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Food_Snack_Cheesiehonkers</thingDef>
          <count>50</count>
        </li>
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Food_Snack_Syndiecakes</thingDef>
          <count>50</count>
        </li>
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Weapon_Ranged_DoubleBarrelShotgun</thingDef>
        </li>
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RS13_Weapon_Ranged_DetectiveRevolver</thingDef>
        </li>
		
        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>RS13_Resource_Processed_SteelRod</thingDef>
          <count>100</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>RS13_Resource_Processed_Cable</thingDef>
          <count>100</count>
        </li>    
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>RS13_SteelSheet</thingDef>
          <count>150</count>
        </li>   
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>RS13_Food_Meals_BaconBurger</thingDef>
          <count>10</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>RS13_Food_Meals_BananaCreamPie</thingDef>
          <count>10</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>RS13_Food_Meals_CopyPasta</thingDef>
          <count>10</count>
        </li>
		
		
        
        <!-- Game start dialog -->
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <textKey>NTExpeditionStartDialog</textKey>
          <closeSound>GameStartSting</closeSound>
        </li>
        
      </parts>
    </scenario>
  </ScenarioDef>

</Defs>
