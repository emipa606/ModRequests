    <order>1400</order>
    <genStep Class="GenStep_ScatterThings">
      <thingDef>RS13_Building_Crate_NTDeliveryGuns</thingDef>
      <allowInWaterBiome>false</allowInWaterBiome>
      <minSpacing>5</minSpacing>
      <extraNoBuildEdgeDist>0</extraNoBuildEdgeDist>
