<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef ParentName="RS13_SurgeryFlesh">
    <defName>RS13_InstallCyborgArm</defName>
    <label>install cyborg arm</label>
    <description>Install a cyborg arm.</description>
    <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
    <jobString>Installing cyborg arm.</jobString>
    <workAmount>100</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>RS13_Category_Medicines</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_CyborgArm</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>RS13_Category_Medicines</li>
      </categories>
      <thingDefs>
        <li>RS13_Resource_Component_CyborgArm</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Shoulder</li>
    </appliedOnFixedBodyParts>
    <addsHediff>RS13_Hediff_CyborgArm</addsHediff>
  </RecipeDef>
  
