<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
    <defName>RS13_Recipe_ReagentGrinder_Sugar</defName>
    <label>Make Su</label>
    <description>Convert plant matter into Biomass.</description>
    <jobString>Making Biomass.</jobString>
    <workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>Growing</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>RS13_Category_Plants</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
	<fixedIngredientFilter>
		<categories>
            <li>RS13_Category_Plants</li>
        </categories>
	</fixedIngredientFilter>
	<defaultIngredientFilter>
		<categories>
			<li>RS13_Category_Plants</li>
		</categories>
		<disallowedCategories>
			<li>RS13_Category_PlantsFood</li>
		</disallowedCategories>
	</defaultIngredientFilter>
	<products>
		<RS13_Chemical_Biomass>5</RS13_Chemical_Biomass>
	</products>
    <workSkill>Plants</workSkill>
   </RecipeDef>
   
