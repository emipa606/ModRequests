<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
    <defName>RS13_Recipe_RoboticsWorktable_Cleanbot</defName>
    <label>Make Cleanbot</label>
    <description>Make a Cleanbot out of a bucket.</description>
    <jobString>Making Cleanbot.</jobString>
    <workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>RS13_WorkType_Robotics</requiredGiverWorkType>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_Bucket</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_CyborgArm</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_ProximitySensor</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
	<products>
		<RS13_SpawnEgg_Cleanbot>1</RS13_SpawnEgg_Cleanbot>
	</products>
    <workSkill>RS13_Skill_Robotics</workSkill>
   </RecipeDef>
   
