<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
    <defName>RS13_Recipe_MechAssembly_CyborgBasic</defName>
    <label>Assemble Basic Cyborg Shell</label>
    <description>Assemble a Cyborg shell; instant Cyborg, just add brain!</description>
    <jobString>Assembling Cyborg Shell.</jobString>
    <workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>RS13_WorkType_Robotics</requiredGiverWorkType>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_CyborgArm</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_CyborgLeg</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_CyborgFrame</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_CyborgChest</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Component_CyborgHead</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_Processed_Cable</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
	<products>
		<RS13_Resource_Component_CyborgShell>1</RS13_Resource_Component_CyborgShell>
	</products>
    <workSkill>RS13_Skill_Robotics</workSkill>
   </RecipeDef>
   
