<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
    <defName>RS13_Recipe_Xenobiology_GrindPlasma</defName>
    <label>Grind Plasma sheets</label>
    <description>Grind sheets of refined plasma into a fine powder useful for chemistry and science.</description>
    <jobString>Grinding Plasma.</jobString>
    <workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>BurnDrug</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_PlasmaSheet</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
	<products>
		<RS13_Chemical_Stable_Plasma>5</RS13_Chemical_Stable_Plasma>
	</products>
    <workSkill>Cooking</workSkill>
   </RecipeDef>

	<RecipeDef>
    <defName>RS13_Recipe_Xenobiology_Blood_SlimeGrey</defName>
    <label>Inject a grey slime extract with blood.</label>
    <description>Trigger one of a slime extract's effects by injecting it with a unit of blood.</description>
    <jobString>Injecting extract.</jobString>
    <workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Surgery</effectWorking>
    <soundWorking>Recipe_Surgery</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Chemical_Blood</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RS13_Resource_SlimeCore_Grey</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
	<products>
		<RS13_Resource_Processed_MonkeyCube>3</RS13_Resource_Processed_MonkeyCube>
	</products>
    <workSkill>Cooking</workSkill>
   </RecipeDef>
   
