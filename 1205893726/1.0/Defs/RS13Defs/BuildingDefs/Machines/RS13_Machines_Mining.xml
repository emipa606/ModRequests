      <li>RS13_Recipe_SmeltOre_Uranium_5</li>
      <li>RS13_Recipe_SmeltOre_Uranium_20</li>
      <li>RS13_Recipe_SmeltOre_Diamond_1</li>
      <li>RS13_Recipe_SmeltOre_Diamond_5</li>
      <li>RS13_Recipe_SmeltOre_Diamond_20</li>
      <li>RS13_Recipe_SmeltOre_Gold_1</li>
      <li>RS13_Recipe_SmeltOre_Gold_5</li>
      <li>RS13_Recipe_SmeltOre_Gold_20</li>
      <li>RS13_Recipe_SmeltOre_Silver_1</li>
      <li>RS13_Recipe_SmeltOre_Silver_5</li>
      <li>RS13_Recipe_SmeltOre_Silver_20</li>
