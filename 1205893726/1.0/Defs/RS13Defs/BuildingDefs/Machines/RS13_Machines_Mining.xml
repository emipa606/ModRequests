<Defs>

  <ThingDef ParentName="RS13_BenchBase">
    <defName>RS13_Machine_OreRedemptionMachine</defName>
    <label>Ore Redemption Machine</label>
    <description>Refines ore into stacks of sheets.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
      <texPath>Buildings/Machines/OreRedemptionMachine/oreredemption</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <constructEffect>ConstructMetal</constructEffect>
    <costList>
      <RS13_Resource_Processed_Cable>3</RS13_Resource_Processed_Cable>
