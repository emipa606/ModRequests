      <li>RS13_Recipe_SmeltOre_Plasma_1</li>
      <li>RS13_Recipe_SmeltOre_Plasma_5</li>
      <li>RS13_Recipe_SmeltOre_Plasma_20</li>
      <li>RS13_Recipe_SmeltOre_Titanium_1</li>
      <li>RS13_Recipe_SmeltOre_Titanium_5</li>
      <li>RS13_Recipe_SmeltOre_Titanium_20</li>
      <li>RS13_Recipe_SmeltOre_Bananium_1</li>
      <li>RS13_Recipe_SmeltOre_Bananium_5</li>
      <li>RS13_Recipe_SmeltOre_Bananium_20</li>
