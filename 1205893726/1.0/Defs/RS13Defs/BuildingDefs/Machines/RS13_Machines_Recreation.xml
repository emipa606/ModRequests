<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="RS13_Furniture_Recreation_ArcadeMachine" ParentName="RS13_FurnitureBase">
    <defName>RS13_Furniture_Recreation_ArcadeMachine</defName>
    <label>Arcade Machine</label>
    <description>Play a variety of arcade games in the hopes of winning a fake esword and earning the privilege of being harm batonned to death by illiterate gibbons in crimson spandex. Requires a chair or stool.</description>
    <graphicData>
      <texPath>Buildings/Machines/ArcadeMachine/arcademachine</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shadowData>
        <volume>(0.65, 0.25, 0.6)</volume>
        <offset>(0, 0, -0.15)</offset>
      </shadowData>
      <damageData>
        <rect>(0.09375,0.296875,0.796875,0.703125)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>true</rotatable>
    <socialPropernessMatters>false</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <building>
      <joyKind>Gaming_Cerebral</joyKind>
    </building>
     <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Mass>5</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>4</Beauty>
      <JoyGainFactor>1</JoyGainFactor>
    </statBases>
	<costList>
      <RS13_SteelSheet>4</RS13_SteelSheet>
      <RS13_Resource_Processed_Cable>4</RS13_Resource_Processed_Cable>
      <RS13_Resource_Circuit_ArcadeMachine>1</RS13_Resource_Circuit_ArcadeMachine>
    </costList>
    <pathCost>50</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
	<comps>
		<li Class="CompProperties_RoomIdentifier">
			<roomStat>Impressiveness</roomStat>
		</li>
		<li Class="CompProperties_Power">
			 <compClass>CompPowerTrader</compClass>
			<shortCircuitInRain>true</shortCircuitInRain>
			<basePowerConsumption>30</basePowerConsumption>
		</li>
	</comps>
  </ThingDef>
  
