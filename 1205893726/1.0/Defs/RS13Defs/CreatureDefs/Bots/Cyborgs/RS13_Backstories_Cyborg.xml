<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<AlienRace.BackstoryDef>
    <defName>RS13_Backstory_Cyborg_Child</defName>
    <title>Cyborg</title>
    <titleShort>Cyborg</titleShort>
    <baseDescription>This unit was created by inserting a sentient organic or positronic brain into a robotic shell.</baseDescription>
    <bodyTypeGlobal>Cyborg_Basic</bodyTypeGlobal>
    <slot>Childhood</slot>
    <spawnCategories>
      <li>Cyborg</li>
    </spawnCategories>
</AlienRace.BackstoryDef>

<!-- Basic Cyborg -->

<AlienRace.BackstoryDef>
    <defName>RS13_Backstory_Cyborg_Basic</defName>
    <title>Cyborg - Basic Model</title>
    <titleShort>Basic Cyborg</titleShort>
    <baseDescription>This unit was created by inserting a sentient organic or positronic brain into a robotic shell. It was not specialised before being activated and remains in its versatile, if underwhelming, basic form.</baseDescription>
    <bodyTypeGlobal>Cyborg_Basic</bodyTypeGlobal>
    <slot>Childhood</slot>
    <workAllows>
	<li>Firefighting</li>
	<li>ManualDumb</li>
	<li>Hauling</li>
	<li>Cleaning</li>
    </workAllows>
    <spawnCategories>
      <li>CyborgBasic</li>
    </spawnCategories>
</AlienRace.BackstoryDef>

<AlienRace.PawnBioDef>
    <defName>RS13_Bio_Cyborg_Basic</defName>
    <childhoodDef>RS13_Backstory_Cyborg_Child</childhoodDef>
    <adulthoodDef>RS13_Backstory_Cyborg_Basic</adulthoodDef>
    <gender>Either</gender> 
    <name>
      <first>Cyborg</first>
      <last>- Basic Model</last>
      <nick>Cyborg</nick>
    </name>
    <validRaces>
      <li>RS13_Race_Cyborg_Basic</li>
    </validRaces>
    <factionLeader>false</factionLeader>
</AlienRace.PawnBioDef>

</Defs>
