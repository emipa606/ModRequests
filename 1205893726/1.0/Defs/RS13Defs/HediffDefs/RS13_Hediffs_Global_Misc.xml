<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef Name="RS13_DiseaseBase" Abstract="True">
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <initialSeverity>0.001</initialSeverity>
  </HediffDef>

  <HediffDef ParentName="RS13_DiseaseBase">
    <defName>RS13_Catatonic</defName>
    <label>totally catatonic</label>
    <labelNoun>total catatonia</labelNoun>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>100000</min>
          <max>300000</max>
        </disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_RecoveryThought">
        <thought>Catharsis</thought>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>RS13_CellularDamage</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <label>cellular damage</label>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.01</severityPerDayNotImmune>
		<immunityPerDaySick>0</immunityPerDaySick>
		<immunityPerDayNotSick>0</immunityPerDayNotSick>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <hediffGivers>
		  <li Class="HediffGiver_Random">
			<hediff>ChemicalDamageModerate</hediff>
			<mtbDays>5</mtbDays>
			<partsToAffect>
				<li>Brain</li>
			</partsToAffect>
		  </li>
          <li Class="HediffGiver_Random">
            <hediff>Dementia</hediff>
            <mtbDays>100</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>Carcinoma</hediff>
            <mtbDays>250</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <vomitMtbDays>1</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
        <hediffGivers>
		  <li Class="HediffGiver_Random">
			<hediff>ChemicalDamageModerate</hediff>
			<mtbDays>3.5</mtbDays>
			<partsToAffect>
				<li>Brain</li>
			</partsToAffect>
		  </li>
          <li Class="HediffGiver_Random">
            <hediff>Dementia</hediff>
            <mtbDays>25</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>Carcinoma</hediff>
            <mtbDays>65</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.10</setMax>
          </li>
        </capMods>
        <hediffGivers>
		  <li Class="HediffGiver_Random">
			<hediff>ChemicalDamageModerate</hediff>
			<mtbDays>1</mtbDays>
			<partsToAffect>
				<li>Brain</li>
			</partsToAffect>
		  </li>
          <li Class="HediffGiver_Random">
            <hediff>Dementia</hediff>
            <mtbDays>4</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>Carcinoma</hediff>
            <mtbDays>9</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="RS13_DiseaseBase">
    <defName>RS13_CloningSickness</defName>
    <label>Cloning sickness</label>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>200000</min>
          <max>500000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <vomitMtbDays>0.2</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <postFactor>0.1</postFactor>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>0.1</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>