<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Added body parts -->

  <HediffDef Name="RS13_AddedBodyPartBase" Abstract="True">
    <hediffClass>Hediff_AddedPart</hediffClass>
    <defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
    <isBad>false</isBad>
  </HediffDef>

  <HediffDef ParentName="RS13_AddedBodyPartBase">
    <defName>RS13_Hediff_CyborgTorso</defName>
    <label>Cyborg Torso</label>
    <labelNoun>a cyborg torso</labelNoun>
    <spawnThingOnRemoved>RS13_Resource_Component_CyborgChest</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.6</partEfficiency>
    </addedPartProps>
  </HediffDef>
  
  <HediffDef ParentName="RS13_AddedBodyPartBase">
    <defName>RS13_Hediff_CyborgArm</defName>
    <label>Cyborg arm</label>
    <labelNoun>a cyborg arm</labelNoun>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>cyborg fist</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>20</power>
            <cooldownTime>1</cooldownTime>
          </li>
        </tools>
      </li>
    </comps>
    <spawnThingOnRemoved>RS13_Resource_Component_CyborgArm</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.6</partEfficiency>
    </addedPartProps>
  </HediffDef>
  
  <HediffDef ParentName="RS13_AddedBodyPartBase">
    <defName>RS13_Hediff_CyborgLeg</defName>
    <label>Cyborg Leg</label>
    <labelNoun>a cyborg leg</labelNoun>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>cyborg foot</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>30</power>
            <cooldownTime>2</cooldownTime>
          </li>
        </tools>
      </li>
    </comps>
    <spawnThingOnRemoved>RS13_Resource_Component_CyborgLeg</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.6</partEfficiency>
    </addedPartProps>
  </HediffDef>

</Defs>
