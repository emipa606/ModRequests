<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef Name="RS13_InjuryBase" Abstract="True">
    <hediffClass>Hediff_Injury</hediffClass>
    <tendable>true</tendable>
    <displayWound>true</displayWound>
    <labelNounPretty>{0} in the {1}</labelNounPretty>
  </HediffDef>

  <HediffDef ParentName="RS13_InjuryBase">
    <defName>RS13_Injury_Glomp</defName>
    <label>Glomp</label>
    <labelNoun>an oozing wound</labelNoun>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>salved</labelTendedWell>
        <labelTendedWellInner>salved</labelTendedWellInner>
        <labelSolidTendedWell>salved</labelSolidTendedWell>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.35</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>glomp mark</permanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.0225</painPerSeverity>
      <averagePainPerSeverityPermanent>0.009</averagePainPerSeverityPermanent>
      <bleedRate>0.1</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>dissolved</destroyedLabel>
      <destroyedOutLabel>dissolved</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
  
</Defs>
