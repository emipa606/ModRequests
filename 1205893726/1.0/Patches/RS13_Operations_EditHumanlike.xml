<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/BodyPartDef[defName="Brain"]</xpath>
		<value>
		<spawnThingOnRemoved>RS13_Resource_BodyPartOrganic_Brain</spawnThingOnRemoved>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Human"]/recipes</xpath>
		<value>
			<recipes>
			  <li>InstallNaturalHeart</li>
			  <li>InstallNaturalLung</li>
			  <li>InstallNaturalKidney</li>
			  <li>InstallNaturalLiver</li>
			  <li>ExciseCarcinoma</li>
			  <li>RemoveBodyPart</li>
			  <li>Euthanize</li>
			  <li>Anesthetize</li>
			  <!--<li>RS13_InstallCyborgTorso</li>-->
			  <li>RS13_InstallCyborgLeg</li>
			  <li>RS13_InstallCyborgArm</li>
			</recipes>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Human"]/race/soundMeleeHitPawn</xpath>
		<value>
			<soundMeleeHitPawn>RS13_Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Human"]/race/soundMeleeHitBuilding</xpath>
		<value>
			<soundMeleeHitBuilding>RS13_Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Human"]/race/soundMeleeMiss</xpath>
		<value>
			<soundMeleeMiss>RS13_Pawn_Melee_Punch_Miss</soundMeleeMiss>
		</value>
	</Operation>
	
</Patch>
