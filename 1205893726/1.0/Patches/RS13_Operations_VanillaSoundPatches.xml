<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Main Menu Music -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SongDef[defName="EntrySong"]/clipPath</xpath>
		<value>
			<clipPath>Songs/variations_on_a_space_station</clipPath>
		</value>
	</Operation>
	
	<!-- Songs -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SongDef[clipPath[text() ="Songs/Relax/Noodles_Planetfall/Noodle_Planetfall_a"]]</xpath>
		<value>
			<clipPath>Songs/endless_space</clipPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SongDef[clipPath[text() ="Songs/Relax/Noodles_Planetfall/Noodle_Planetfall_b"]]</xpath>
		<value>
			<clipPath>Songs/endless_space</clipPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SongDef[clipPath[text() ="Songs/Relax/Noodles_Planetfall/Noodle_Planetfall_c"]]</xpath>
		<value>
			<clipPath>Songs/endless_space</clipPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SongDef[clipPath[text() ="Songs/Relax/Noodles_Planetfall/Noodle_Planetfall_d"]]</xpath>
		<value>
			<clipPath>Songs/endless_space</clipPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SongDef[clipPath[text() ="Songs/Relax/Noodles_Planetfall/Noodle_Planetfall_e"]]/clipPath</xpath>
		<value>
			<clipPath>Songs/endless_space</clipPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SongDef[clipPath[text() ="Songs/Relax/A_New_Day"]]</xpath>
		<value>
			<clipPath>Songs/endless_space</clipPath>
		</value>
	</Operation>
	
	<!-- Ambient Altitude -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SoundDef[defName="Ambient_AltitudeWind"]/subSounds/li[1]/grains/li[1]/clipPath</xpath>
		<value>
			<clipPath>Songs/honks_on_a_space_station</clipPath>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SoundDef[defName="Ambient_AltitudeWind"]/subSounds/li[1]/volumeRange</xpath>
		<value>
		  <volumeRange>
            <min>8</min>        
            <max>8</max>
          </volumeRange>
		</value>
	</Operation>
	
	<!-- Letter Arrived -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SoundDef[defName="LetterArrive" or defName="LetterArrive_BadUrgent" or defName="LetterArrive_BadUrgentBig" or defName="LetterArrive_BadUrgentSmall"]/subSounds/li[1]/grains/li[1]/clipPath</xpath>
		<value>
			<clipPath>OneShots/Effects/adminhelp</clipPath>
		</value>
	</Operation>
	
	<!-- Game Start -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SoundDef[defName="GameStartSting"]/subSounds</xpath>
		<value>
			    <subSounds>
				  <li>
					<onCamera>True</onCamera>      
					<grains>
					  <li Class="AudioGrain_Clip">
						<clipPath>OneShots/Vox/AI/welcome</clipPath>
					  </li>
					</grains>      
					<volumeRange>
					  <min>30</min>        
					  <max>30</max>
					</volumeRange>
				  </li>
			</subSounds>
		</value>
	</Operation>
	
	
</Patch>
