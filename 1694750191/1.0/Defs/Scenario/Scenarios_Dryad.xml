<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
    <defName>Dryad_StandradScenario</defName>
    <label>Dryad Start</label>
    <description>A lone dryad start.</description>
    <scenario>
      <summary>Start game as a lone dryad. Most of the dryadic research complete but lacking in the rest.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>DryadPlayerFaction</factionDef>
      </playerFaction>
      <parts>

        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>1</pawnCount>
          <pawnChoiceCount>3</pawnChoiceCount>
        </li>

        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
        </li>

        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>DryadCorpseRevenant</thingDef>
          <count>3</count>
        </li>

        <!-- Starting research -->

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>Stonecutting</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>TreeSowing</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>RecurveBow</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>Greatbow</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>DryadDryadic</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>DryadRunes</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>DryadCreation</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>DryadOrgan</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>DryadSculpture</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>DryadDecorative</project>
        </li>

        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>DryadRevenant</project>
        </li>

        <!-- Game start dialog -->
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>A lone dryad finds itself alone, cut off from the rest. Establish a new Athel Loren of your own.</text>
          <closeSound>GameStartSting</closeSound>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>
  
</Defs>