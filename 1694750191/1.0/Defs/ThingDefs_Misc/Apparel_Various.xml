<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="ApparelMakeableBaseDryad" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SculptingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

  <ThingDef Name="HatMakeableBaseDryad" ParentName="ApparelMakeableBaseDryad" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
  </ThingDef>
  
  <ThingDef ParentName="HatMakeableBaseDryad">
    <defName>Apparel_DryadicMask</defName>
    <label>dryadic mask</label>
    <description>A dryadic mask.</description>
    <graphicData>
      <texPath>Things/Item/Apparel/DryadicMask/DryadicMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Woody</li>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.03</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.03</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <PainShockThreshold>0.05</PainShockThreshold>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/DryadicMask/DryadicMask</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Dryadic</li>
      </defaultOutfitTags>
      <tags>
        <li>Dryadic</li>
      </tags>
    </apparel>
    <recipeMaker>
      <workSpeedStat>SculptingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>DryadSculptureSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Artistic>3</Artistic>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

</Defs>