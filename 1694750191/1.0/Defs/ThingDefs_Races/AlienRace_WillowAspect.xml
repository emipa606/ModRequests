      <surpriseAttack>
        <extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>5</amount>
          </li>
        </extraMeleeDamages>
      </surpriseAttack>
    </li>
    <li>
      <label>teeth</label>
      <capacities>
        <li>Bite</li>
      </capacities>
      <power>16.0</power>
      <cooldownTime>2</cooldownTime>
      <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
    </li>
  </tools>
    <race>
