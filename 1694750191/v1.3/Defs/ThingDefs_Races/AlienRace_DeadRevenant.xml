<?xml version="1.0" encoding="utf-8" ?>

<Defs>
  
<ThingDef ParentName="KTDryadAnimalThingBase">
    <defName>DryadDeadRevenant</defName>
    <label>corpse-revenant</label>
    <description>A corpse reanimated by a dryad seed. They are slow and short lived, but easy to handle and requires very little sustenance.</description>
    <statBases>
      <PainShockThreshold>3</PainShockThreshold>
      <MoveSpeed>2.4</MoveSpeed>
      <ComfyTemperatureMin>-40</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
      <MarketValue>300</MarketValue>
      <LeatherAmount>0</LeatherAmount>
      <MeatAmount>0</MeatAmount>
      <ArmorRating_Blunt>0.11</ArmorRating_Blunt>
      <ArmorRating_Sharp>0</ArmorRating_Sharp>
    </statBases>
  <tools>
    <li>
      <label>right shifting branch</label>
      <capacities>
        <li>Scratch</li>
        <li>Cut</li>
        <li>Blunt</li>
      </capacities>
      <power>7</power>
      <cooldownTime>2</cooldownTime>
      <linkedBodyPartsGroup>DryadRightBranchG</linkedBodyPartsGroup>
      <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
    </li>
    <li>
      <label>left shifting branch</label>
      <capacities>
        <li>Scratch</li>
        <li>Cut</li>
        <li>Blunt</li>
      </capacities>
      <power>7</power>
      <cooldownTime>2</cooldownTime>
      <linkedBodyPartsGroup>DryadLeftBranchG</linkedBodyPartsGroup>
      <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
    </li>
  </tools>
    <race>
      <useMeatFrom>Alien_Dryad</useMeatFrom>
      <needsRest>true</needsRest>
      <thinkTreeMain>Animal</thinkTreeMain>
      <thinkTreeConstant>AnimalConstant</thinkTreeConstant>
      <body>KTTreeRevenant</body>
      <trainability>Intermediate</trainability>
      <predator>true</predator>
      <packAnimal>false</packAnimal>
      <baseHungerRate>0.2</baseHungerRate>
      <lifeExpectancy>5</lifeExpectancy>
      <baseBodySize>1</baseBodySize>
      <bloodDef>DryadChlorophyll</bloodDef>
      <makesFootprints>false</makesFootprints>
      <baseHealthScale>1.25</baseHealthScale>
      <gestationPeriodDays>32</gestationPeriodDays>
      <wildness>0</wildness>
      <foodType>CarnivoreAnimal</foodType>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0.1</manhunterOnTameFailChance>
      <herdAnimal>false</herdAnimal>
      <nameOnTameChance>0.1</nameOnTameChance>
      <herdMigrationAllowed>false</herdMigrationAllowed>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.01</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.2</minAge>
          <soundWounded>Pawn_BigInsect_Pain</soundWounded>
          <soundDeath>Pawn_BigInsect_Death</soundDeath>
          <soundCall>Pawn_BigInsect_Call</soundCall>
          <soundAngry>Pawn_BigInsect_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>Dryad_Reliq</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef>
    <defName>DryadDeadRevenantWild</defName>
    <label>corpse-revenant</label>
    <race>DryadDeadRevenant</race>
    <combatPower>30</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/RevenantBound/RevenantDead</texPath>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/RevenantBound/Dessicated_RevenantDead</texPath>
          <drawSize>1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/RevenantBound/RevenantDead</texPath>
          <drawSize>1.3</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/RevenantBound/Dessicated_RevenantDead</texPath>
          <drawSize>1.3</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/RevenantBound/RevenantDead</texPath>
          <drawSize>1.6</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/RevenantBound/Dessicated_RevenantDead</texPath>
          <drawSize>1.6</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

