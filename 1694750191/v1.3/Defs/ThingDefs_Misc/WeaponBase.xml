<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef Name="BaseMeleeWeaponDryad" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Neotlithic</techLevel>
    <smeltable>true</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>

    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>DryadCircle</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

  <ThingDef Name="BaseMeleeWeapon_SharpDryad" ParentName="BaseMeleeWeaponDryad" Abstract="True">
    <recipeMaker>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Silver</li>
          <li>Gold</li>
          <li>WoodLog</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

  <ThingDef Name="BaseMeleeWeapon_Sharp_QualityDryad" Abstract="True" ParentName="BaseMeleeWeapon_SharpDryad">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
  </ThingDef>


</Defs>