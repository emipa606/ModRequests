  <ThingDef ParentName="ResourceBase">
    <defName>DryadHusk</defName>
    <label>dryad husk</label>
    <thingClass>ThingWithComps</thingClass>
    <description>The empty husk of a dryad.</description>
    <category>Item</category>
    <graphicData>
      <texPath>Things/Item/BodyPart/DryadHusk</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.7</drawSize>
    </graphicData>
    <thingCategories>
      <li>Artifacts</li>
    </thingCategories>
    <costList>
      <WoodLog>50</WoodLog>
      <DryadLeg>2</DryadLeg>
      <DryadArm>2</DryadArm>
      <Leather_Human>50</Leather_Human>
    </costList>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>35</Mass>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Artistic</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>DryadCircle</li>
      </recipeUsers>
      <skillRequirements>
        <Artistic>7</Artistic>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedDryadBody</unfinishedThingDef>
      <researchPrerequisite>DryadCreation</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

