<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <CultureDef>
    <defName>KTDryad</defName>
    <label>wilderness dryadic</label>
    <description>An ancient culture found in distant and lost woods, seldom traversed.</description>
    <pawnNameMaker>NamerKTDryad</pawnNameMaker>
    <ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoCorunan</ideoNameMaker>
    <deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerDeityKTDryad</deityNameMaker>
    <deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">DeityTypeMakerKTDryad</deityTypeMaker>
    <festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalCorunan</festivalNameMaker>
    <leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">LeaderTitleMaker_Corunan</leaderTitleMaker>
    <allowedPlaceTags>
      <li>OriginTribal</li>
    </allowedPlaceTags>
    <iconPath>World/WorldObjects/Expanding/Village</iconPath>
    <iconColor>(0.8, 0.8, 0.8)</iconColor>
    <preferredWeaponClasses>
      <noble>Neolithic</noble>
      <despised>Ultratech</despised>
    </preferredWeaponClasses>
    <thingStyleCategories>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <category>Totemic</category>
        <priority>2</priority>
      </li>
    </thingStyleCategories>
    <styleItemTags>
      <li>
        <tag>KTDryad</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoBeard</tag>
        <baseWeight>10</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>BeardTribal</tag>
        <baseWeight>0.2</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>TattooFaceTribal</tag>
        <baseWeight>0.1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>TattooBodyTribal</tag>
        <baseWeight>0.2</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoTattoo</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
    </styleItemTags>
  </CultureDef>
 
