<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
        <operations>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Goat" or defName = "Sheep" or defName = "Donkey"]/race[not(packAnimal)]</xpath>
				<value>
					<packAnimal>true</packAnimal>
				</value>
			</li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to BorealForest allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "BorealForest"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to Tundra allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "Tundra"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to ColdBog allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "ColdBog"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to IceSheet allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "IceSheet"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to SeaIce allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "SeaIce"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to TemperateForest allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "TemperateForest"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to TemperateSwamp allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "TemperateSwamp"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to TropicalRainforest allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "TropicalRainforest"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to TropicalSwamp allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "TropicalSwamp"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <!--Biomes_WarmArid-->
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to AridShrubland allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "AridShrubland"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to Desert allowed PackAnimals -->
                <xpath>/Defs/BiomeDef[defName = "Desert"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <li Class="PatchOperationAdd"> <!-- Add CORE animals to Desert allowed ExtremeDesert -->
                <xpath>/Defs/BiomeDef[defName = "ExtremeDesert"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>Advanced Biomes (Continued)</li>
                </mods>
                <match Class="PatchOperationAdd">
                <xpath>/Defs/BiomeDef[defName = "Savanna" or defName = "Volcano" or defName = "Wetland" or defName = "PoisonForest" or defName = "Wasteland"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
                </match>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>More Vanilla Biomes</li>
                </mods>
                <match Class="PatchOperationAdd">
                <xpath>/Defs/BiomeDef[defName = "ZBiome_Sandbar_NoBeach" or defName = "ZBiome_Marsh" or defName = "ZBiome_Iceberg_NoBeach" or defName = "ZBiome_Grasslands" or defName = "ZBiome_DesertOasis" or defName = "ZBiome_CoastalDunes" or defName = "ZBiome_CloudForest" or defName = "ZBiome_AlpineMeadow"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
                </match>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>Biomes! Oasis</li>
                </mods>
                <match Class="PatchOperationAdd">
                <xpath>/Defs/BiomeDef[defName = "BMT_ChromaticOasis"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                </value>
                </match>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>Biomes! Islands</li>
                </mods>
                <match Class="PatchOperationAdd">
                <xpath>/Defs/BiomeDef[defName = "BiomesIslands_Atoll" or defName = "BiomesIslands_BorealIsland" or defName = "BiomesIslands_BorealArchipelago" or defName = "BiomesIslands_DesertArchipelago" or defName = "BiomesIslands_DesertIsland" or defName = "BiomesIslands_DesertIslandBase" or defName = "BiomesIslands_TemperateIslandBase" or defName = "BiomesIslands_TemperateIsland" or defName = "BiomesIslands_TemperateArchipelago" or defName = "BiomesIslands_TropicalIslandBase" or defName = "BiomesIslands_TropicalIsland" or defName = "BiomesIslands_TropicalArchipelago" or defName = "BiomesIslands_TundraIslandBase" or defName = "BiomesIslands_TundraIsland" or defName = "BiomesIslands_TundraArchipelago"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                </value>
                </match>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>[RF] Permafrost Continued [1.0][1.1][1.2]</li>
                </mods>
                <match Class="PatchOperationAdd">
                <xpath>/Defs/BiomeDef[defName = "Permafrost"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                </value>
                </match>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>ReGrowth: Aspen Forests</li>
                </mods>
                <match Class="PatchOperationAdd">
                <xpath>/Defs/BiomeDef[defName = "RG-AF_AspenForest"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
                </match>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>ReGrowth: Volcanic Ice Sheet [Discontinued] </li>
                </mods>
                <match Class="PatchOperationAdd">
                <xpath>/Defs/BiomeDef[defName = "RG-VIS_VulcanicIceSheet"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
                </match>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>ReGrowth: Wastelands</li>
                </mods>
                <match Class="PatchOperationAdd">
                <xpath>/Defs/BiomeDef[defName = "RG-W_Wasteland"]/allowedPackAnimals</xpath>
                <value>
                    <li>Goat</li>
                    <li>Sheep</li>
                    <li>Donkey</li>
                </value>
                </match>
            </li>
        </operations>
    </match>
</Operation>



</Patch>