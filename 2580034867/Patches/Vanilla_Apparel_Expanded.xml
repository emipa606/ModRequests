<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
		<mods>
        <li>Vanilla Apparel Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- Casual T-Shirt -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_CasualTShirt"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>
				<!-- Hoodie -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_Shorts"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>
				<!-- Tank Top -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_Skirt"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>
				<!-- Jeans -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_Overalls"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>	
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_Jeans"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>	
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_TankTop"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>	
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_Blouse"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>	
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "VAE_Apparel_Tunic"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>			
			</operations>
		</match>
	</Operation>
</Patch>