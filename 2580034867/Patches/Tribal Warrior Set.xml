<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
		<mods>
        <li>Tribal Warrior Set!</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- Casual T-Shirt -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Gunmar_Apparel_WovenCap"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>
				<!-- Hoodie -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Gunmar_Apparel_WovenMantle"]/apparel/tags</xpath>
					<value>
						   <li>HippieBasic</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>