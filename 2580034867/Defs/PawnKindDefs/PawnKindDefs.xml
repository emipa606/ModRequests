<Defs>

  <PawnKindDef>
    <defName>Hippie</defName>
    <label>Hippie</label>
    <race>Human</race>
    <initialWillRange>1~2</initialWillRange>
    <initialResistanceRange>4~8</initialResistanceRange>
    <combatPower>35</combatPower>
    <defaultFactionType>Hippies</defaultFactionType>
    <baseRecruitDifficulty>0.5</baseRecruitDifficulty>
    <chemicalAddictionChance>0.5</chemicalAddictionChance>
    <isFighter>false</isFighter>
    <invNutrition>1</invNutrition>
    <minGenerationAge>14</minGenerationAge>
    <maxGenerationAge>80</maxGenerationAge>
    <gearHealthRange>
      <min>0.5</min>
      <max>1.2</max>
