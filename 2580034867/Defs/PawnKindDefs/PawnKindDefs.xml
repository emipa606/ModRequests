      <min>100</min>
      <max>200</max>
    </apparelMoney>
    <apparelAllowHeadgearChance>0.3</apparelAllowHeadgearChance>
    <apparelTags>
	<li>HippieBasic</li>
    </apparelTags>
    <weaponMoney>
      <min>62</min>
      <max>190</max>
    </weaponMoney>
    <weaponTags>
	<li>Toolagri</li>
    </weaponTags>
    <inventoryOptions>
      <skipChance>0</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>SmokeleafJoint</thingDef>
          <countRange>
            <min>0</min>
            <max>3</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
	<skills>
	  <li>
        <skill>Plants</skill>
        <range>5~15</range>
      </li>
	  <li>
        <skill>Artistic</skill>
        <range>4~12</range>
      </li>	 	
    </skills>
  </PawnKindDef>


