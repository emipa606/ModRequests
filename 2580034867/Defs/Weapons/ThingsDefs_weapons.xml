<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
    <defName>tool_houe</defName>
    <label>houe</label>
    <description>Pour l'agriculteur, la houe est un outil de base pour tous les travaux de la terre.</description>
    <graphicData>
      <texPath>Weapons/houe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
	<costList>
	<Steel>20</Steel>
	<WoodLog>40</WoodLog>
	</costList>
    <weaponTags>
      <li>NeolithicMeleeDecent</li>
	<li>Toolagri</li>
    </weaponTags>
    <statBases>
      <WorkToMake>7500</WorkToMake>
      <Mass>2</Mass>
    </statBases>
	<equippedStatOffsets>
	<PlantWorkSpeed>0.15</PlantWorkSpeed>
	<PlantHarvestYield>0.15</PlantHarvestYield>
	</equippedStatOffsets>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
      <li>
        <label>manche</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>3.2</cooldownTime>
      </li>
      <li>
        <label>tête</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
	<researchPrerequisite>agricultural_tools</researchPrerequisite>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

