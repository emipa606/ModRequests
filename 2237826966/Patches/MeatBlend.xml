			<operations>
				<!--Remove Tofu as an ingredient in meat blend x5-->
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName="MeatBlend5"]/fixedIngredientFilter/disallowedThingDefs</xpath>
