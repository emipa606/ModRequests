<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThoughtDef>
		<defName>AteRawTofu</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Tofu</icon>
		<durationDays>1</durationDays>
		<stages>
		  <li>
			<label>ate plain tofu</label>
			<description>That tofu would have been much better cooked into a meal.</description>
			<baseMoodEffect>-4</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<thoughtClass>VanillaCookingExpanded.Thought_Hediff</thoughtClass>
		<hediff>ConsumedSpicedTofu</hediff>
		<defName>ConsumedSpicedTofu</defName>
		<durationDays>0.5</durationDays>
		<stages>
			<li>
				<label>wonderful flavour</label>
				<description>I love the flavour of this spiced tofu. Really compliments the dish!</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>	
		<defName>ConsumedCannedTofu</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/CannedTofu</icon>
		<durationDays>0.5</durationDays>
		<stages>
			<li>
				<label>ate canned tofu</label>
				<description>Eating cold tofu directly from a can is gross.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>	
	</ThoughtDef>
</Defs>
