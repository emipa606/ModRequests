  <!--===== Pipe LMG =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Pipe_LMG</defName>
    <label>pipe LMG</label>
    <description>A crudely made gas-operated light machine gun. It has long bursts of fire, but will jam frequently. It also includes a bayonet attachment for short range combat.</description>
    <graphicData>
      <texPath>Things/Weapons/m_pipe_lmg</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.5</drawSize>
    </graphicData>
