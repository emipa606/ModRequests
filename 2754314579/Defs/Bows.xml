<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--Grenade Bow-->
<ThingDef ParentName="BaseMakeableGrenade">
    <defName>Bow_Grenade</defName>
    <label>bownade</label>
    <tickerType>Normal</tickerType>
    <description>Pull the pin and immediately shoot the arrow, or else.</description>
    <graphicData>
      <texPath>Bownade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Recurve</soundInteract>
    <techLevel>Industrial</techLevel>
    <costList>
      <Bow_Recurve>1</Bow_Recurve>
      <Weapon_GrenadeFrag>1</Weapon_GrenadeFrag>
    </costList>
    <relicChance>0.3</relicChance>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <Mass>1.3</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.78</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>45</equippedAngleOffset>
    <weaponTags>
      <li>GrenadeDestructive</li>
      <li>EmpireGrenadeDestructive</li>
    </weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>RecurveBow</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <noiseRadius>4</noiseRadius>
        <forcedMissRadius>0.4</forcedMissRadius>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrow_Grenade</defaultProjectile>
        <warmupTime>1.45</warmupTime>
        <range>25.9</range>
        <soundCast>Bow_Recurve</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.66</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseGrenadeProjectile">
    <thingClass>Projectile_Explosive</thingClass>
    <defName>Arrow_Grenade</defName>
    <label>grenade bow arrow</label>
    <graphicData>
      <texPath>BownadeP</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <arcHeightFactor>0.5</arcHeightFactor>
      <explosionRadius>1.9</explosionRadius >
      <damageDef>Bomb</damageDef>
      <!-- Use default damage from explosion def -->
      <speed>56</speed>
      <explosionDelay>0</explosionDelay>
    </projectile>
  </ThingDef>

