<!--Pila High Explosive-->
<ThingDef ParentName="BaseMakeableGrenade">
    <defName>PilaHighExplosive</defName>
    <label>HEla</label>
    <tickerType>Normal</tickerType>
    <description>This shell won't miss 9 tiles away from its target (It might miss 2 but that's still valid).</description>
    <graphicData>
      <texPath>HEla</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
    <soundInteract>Interact_BeatFire</soundInteract>
    <techLevel>Industrial</techLevel>
    <costList>
      <Pila>1</Pila>
      <Shell_HighExplosive>3</Shell_HighExplosive>
    </costList>
    <relicChance>0.2</relicChance>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.71</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>IndustrialRangedHeavy</li>
      <li>GrenadeDestructive</li>
      <li>EmpireGrenadeDestructive</li>
    </weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite>Mortars</researchPrerequisite>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <forcedMissRadius>0.4</forcedMissRadius>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>PilumHE_Thrown</defaultProjectile>
        <warmupTime>4</warmupTime>
        <range>18.9</range>
        <soundCast>Interact_BeatFire</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
         <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseGrenadeProjectile">
    <thingClass>Projectile_Explosive</thingClass>
    <defName>PilumHE_Thrown</defName>
    <label>pilum with HE shell on the tip</label>
    <graphicData>
      <texPath>HElaP</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <arcHeightFactor>1</arcHeightFactor>
