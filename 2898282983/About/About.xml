<?xml version="1.0" encoding="utf-8"?>
<ModMetaData>
  <name>Venerated Xenotype Flexibility</name>
  <author>ChrisClark13</author>
  <packageId>ChrisClark13.VeneratedXenotypeFlexibility</packageId>
  <supportedVersions>
    <li>1.4</li>
  </supportedVersions>

  <description>
    Adds "Xenotype Strictness" Precept to adjust how a pawn is determined to be a Preferred Xenotype.
    Partial (50% or more gene match, configurable), Full (100% match, extra ok), Exact (100%, no extras), Vanilla (default to vanilla/other modded check)
  </description>

  <modDependencies>
    <li>
      <packageId>brrainz.harmony</packageId>
      <displayName>Harmony</displayName>
      <steamWorkshopUrl>https://steamcommunity.com/workshop/filedetails/?id=2009463077</steamWorkshopUrl>
      <downloadUrl>https://rimworldbase.com/harmony-library/</downloadUrl>
    </li>
    <li>
      <packageId>ludeon.rimworld.ideology</packageId>
      <displayName>Ideology</displayName>
    </li>
    <li>
      <packageId>ludeon.rimworld.biotech</packageId>
      <displayName>Biotech</displayName>
    </li>
  </modDependencies>

  <loadAfter>
    <li>brrainz.harmony</li>
    <li>ludeon.rimworld</li>
    <li>ludeon.rimworld.ideology</li>
    <li>ludeon.rimworld.biotech</li>
    <li>porousboat.flexible_xenogerms</li>
  </loadAfter>
</ModMetaData>
