<Defs>
<ThingDef ParentName="ApparelMakeableBase">
		<defName>Syntho_Overcoat</defName>
		<label>Glitter Shawl</label>
		<description>A Glitterworld shawl. Focuses more on fashion than defense.</description>
		<graphicData>
			<texPath>Clothing/Overcoat/Overcoat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<!--costList>
			<Synthread>80</Synthread>
		</costList-->
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
			<li>Metallic</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToMake>24000</WorkToMake>
			<!--WorkToMake>100</WorkToMake-->
			<Mass>1.6</Mass>
			<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<Insulation_Cold>7.5</Insulation_Cold>
			<Insulation_Heat>-5</Insulation_Heat>
		    <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>

		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.02</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Clothing/Overcoat/Overcoat</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Syntho</li>
			</tags>
			<defaultOutfitTags>
				<li>Anything</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<researchPrerequisite>GlitterClothing</researchPrerequisite>
		</recipeMaker>
			<colorGenerator Class="ColorGenerator_Options">
				<options>
                    <li><!--White-->
						<weight>9</weight>
						<only>RGBA(1.0,1.0,1.0,1)</only>
					</li>
					<li><!--Blue-->
						<weight>2</weight>
						<only>RGBA(0.6, 0.7, 1,1)</only>
					</li>
					<li><!--Pink-->
						<weight>2</weight>
						<only>RGBA(1.0, 0.6, 1,1)</only>
					</li>
					<li><!--Red-->
						<weight>2</weight>
						<only>RGBA(0.9, 0.4, 0.4,1)</only>
					</li>
					<li><!--Orange-->
						<weight>2</weight>
						<only>RGBA(1.0, 0.7, 0.1,1)</only>
					</li>
					<li><!--Green-->
						<weight>2</weight>
						<only>RGBA(0.6, 1, 0.6,1)</only>
					</li>
					<li><!--Teal-->
						<weight>2</weight>
						<only>RGBA(0.6, 1, 1,1)</only>
					</li>
					<li><!--Purple-->
						<weight>2</weight>
						<only>RGBA(0.8, 0.6, 1.0,1)</only>
					</li>
				</options>
		</colorGenerator>
	</ThingDef>
	</Defs>