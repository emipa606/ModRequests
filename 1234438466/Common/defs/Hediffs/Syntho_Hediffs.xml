<Defs>
	<HediffDef>
		<defName>SynthoSlowdown</defName>
		<label>hypothermic slowdown</label>
		<description>A special biological state used by Syntho to survive freezing temperatures by slowing their heartbeat and metabolic rate. This process is a sub-concious one akin to breathing or blinking.</description>
		<defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
		<stages>
			<li>
				<label>minor</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.1</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<hungerRateFactorOffset>-0.2</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.8</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.3</minSeverity>
				<hungerRateFactorOffset>-0.3</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.7</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.4</minSeverity>
				<hungerRateFactorOffset>-0.4</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.6</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.5</minSeverity>
				<hungerRateFactorOffset>-0.5</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.6</minSeverity>
				<hungerRateFactorOffset>-0.6</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.4</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.7</minSeverity>
				<hungerRateFactorOffset>-0.7</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.3</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.8</minSeverity>
				<hungerRateFactorOffset>-0.8</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.2</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.9</minSeverity>
				<hungerRateFactorOffset>-0.9</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>1</minSeverity>
				<hungerRateFactorOffset>-0.95</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.05</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>CellularDegeneration</defName>
		<label>cellular degeneration</label>
		<description>General loss of cellular organization and constituion. Caused by the cloning process used to create Syntho. Unavoidable and untreatable. Get your affairs in order.</description>
		<defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
		<chronic>false</chronic>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>0.1</initialSeverity>
		<chanceToCauseNoPain>0.4</chanceToCauseNoPain>
		<tendable>false</tendable>
		<scenarioCanAdd>true</scenarioCanAdd>
		<stages>
      <li>
        <label>minor</label>
        <partEfficiencyOffset>-0.1</partEfficiencyOffset>
        <painOffset>0.1</painOffset>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>minor</label>
        <partEfficiencyOffset>-0.2</partEfficiencyOffset>
        <painOffset>0.2</painOffset>
      </li>
	  <li>
        <minSeverity>0.3</minSeverity>
        <label>moderate</label>
        <partEfficiencyOffset>-0.3</partEfficiencyOffset>
        <painOffset>0.2</painOffset>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>moderate</label>
        <partEfficiencyOffset>-0.45</partEfficiencyOffset>
        <painOffset>0.35</painOffset>
      </li>
	  <li>
        <minSeverity>0.5</minSeverity>
        <label>moderate</label>
        <partEfficiencyOffset>-0.55</partEfficiencyOffset>
        <painOffset>0.4</painOffset>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>major</label>
        <partEfficiencyOffset>-0.65</partEfficiencyOffset>
        <painOffset>0.5</painOffset>
      </li>
	  <li>
        <minSeverity>0.7</minSeverity>
        <label>major</label>
        <partEfficiencyOffset>-0.8</partEfficiencyOffset>
        <painOffset>0.55</painOffset>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>extreme</label>
        <partEfficiencyOffset>-0.9</partEfficiencyOffset>
        <painOffset>0.6</painOffset>
      </li>
	  <li>
        <minSeverity>0.9</minSeverity>
        <label>extreme</label>
        <partEfficiencyOffset>-1</partEfficiencyOffset>
        <painOffset>0.65</painOffset>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <label>extreme</label>
        <partEfficiencyOffset>-1.0</partEfficiencyOffset>
        <painOffset>0.7</painOffset>
        <destroyPart>true</destroyPart>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_GrowthMode">
        <severityPerDayGrowing>0.05</severityPerDayGrowing>
        <severityPerDayRemission>-0.01</severityPerDayRemission>
        <severityPerDayGrowingRandomFactor>0.35~1.6</severityPerDayGrowingRandomFactor>
        <severityPerDayRemissionRandomFactor>0.8~1.4</severityPerDayRemissionRandomFactor>
      </li>
    </comps>
	</HediffDef>
	
</Defs>