<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>PlantEnargo</defName>
		<label>Enargo plant</label>
		<description>This small bulb sit's comfortably with it's hard, grey end just under the surface of the soil. A large blue pod grows out of the center of the shoots, storing solar energy and minerals.</description>
		<statBases>
			<Nutrition>0.15</Nutrition>
		    <ComfyTemperatureMin>0</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Enargo/Plant/EnargoPlant</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible />
		<plant>
			<fertilitySensitivity>0.25</fertilitySensitivity>
			<fertilityMin>0</fertilityMin>
			<dieIfLeafless>false</dieIfLeafless>
			<maxMeshCount>4</maxMeshCount>
			<harvestMinGrowth>0.80</harvestMinGrowth>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RawEnargo</harvestedThingDef>
			<harvestYield>4</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<immatureGraphicPath>Enargo/Plant/ImmatureEnargo</immatureGraphicPath>
			<growDays>2.7</growDays>
			<visualSizeRange>0.4~0.7</visualSizeRange>
			<purpose>Food</purpose>
			<sowResearchPrerequisites>
				<li>EnargoPlanting</li>
			</sowResearchPrerequisites>
			<sowWork>120</sowWork>
			<harvestWork>175</harvestWork>
			<growMinGlow>0.3</growMinGlow>
			<growOptimalGlow>1</growOptimalGlow>
		</plant>
	</ThingDef>
</Defs>