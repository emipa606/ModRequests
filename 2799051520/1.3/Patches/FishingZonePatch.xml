<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- 要动用的手术类型 -->
  <Operation Class="PatchOperationReplace">
    <!-- 要修改的变量是某个标签为<TerrainDef>中defName为WaterDeep的物品，修改这个物品的纹理值texturePath -->
    <xpath>/Defs/FleckDef[defName="BloodSplash"]/graphicData/texPath</xpath>
    <value>
      <!-- 值改为你新创造的纹理目录 -->
      <texPath>Things/leaves</texPath>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <!-- 要修改的变量是某个标签为<TerrainDef>中defName为WaterDeep的物品，修改这个物品的纹理值texturePath -->
    <xpath>/Defs/FleckDef[defName="BloodSplashLong"]/graphicData/texPath</xpath>
    <value>
      <!-- 值改为你新创造的纹理目录 -->
      <texPath>Things/leaves</texPath>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <!-- 要修改的变量是某个标签为<TerrainDef>中defName为WaterDeep的物品，修改这个物品的纹理值texturePath -->
    <xpath>/Defs/FleckDef[defName="BloodSplashLong"]/graphicData/color</xpath>
    <value>
      <!-- 值改为你新创造的纹理目录 -->
      <color>(0.1,0.1,0.1,0.8)</color>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <!-- 要修改的变量是某个标签为<TerrainDef>中defName为WaterDeep的物品，修改这个物品的纹理值texturePath -->
    <xpath>/Defs/EffecterDef[defName="Damage_HitFlesh"]/children/li[subEffecterClass="SubEffecter_SprayerTriggered"]/color</xpath>
    <value>
      <!-- 值改为你新创造的纹理目录 -->
      <color>(1,1,1,0.8)</color>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <!-- 要修改的变量是某个标签为<TerrainDef>中defName为WaterDeep的物品，修改这个物品的纹理值texturePath -->
    <xpath>/Defs/ThingDef[defName="Filth_Blood"]/graphicData/texPath</xpath>
    <value>
      <!-- 值改为你新创造的纹理目录 -->
      <texPath>Things/leaves</texPath>
    </value>
  </Operation>
  <Operation Class="PatchOperationRemove">
    <!-- 要修改的变量是某个标签为<TerrainDef>中defName为WaterDeep的物品，修改这个物品的纹理值texturePath -->
    <xpath>/Defs/ThingDef[defName="Filth_Blood"]/graphicData/color</xpath>
  </Operation>
</Patch>