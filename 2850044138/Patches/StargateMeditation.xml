<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!--Adding meditation focus stat to Stargates -->

<Operation Class="PatchOperationAdd">
	<xpath>Defs/ThingDef[defName = "StargateMod_Stargate"]/statBases</xpath>
    <value>
		<MeditationFocusStrength>0.34</MeditationFocusStrength>
	</value>
</Operation>

<Operation Class="PatchOperationAdd">
	<xpath>Defs/ThingDef[defName = "StargateMod_AdvancedStargate"]/statBases</xpath>
    <value>
		<MeditationFocusStrength>0.34</MeditationFocusStrength>
	</value>
</Operation>

<Operation Class="PatchOperationAdd">
	<xpath>Defs/ThingDef[defName = "StargateMod_OrlinStargate"]/statBases</xpath>
    <value>
		<MeditationFocusStrength>0.34</MeditationFocusStrength>
	</value>
</Operation>

<!--Adding meditation comp to Stargates -->
<Operation Class="PatchOperationAdd">
	<xpath>Defs/ThingDef[defName = "StargateMod_Stargate"]/comps</xpath>
	<value>
		<li Class="CompProperties_MeditationFocus">
			<statDef>MeditationFocusStrength</statDef>
			<focusTypes><li>Stargate</li></focusTypes>
		</li>
	</value>
</Operation>

<Operation Class="PatchOperationAdd">
<xpath>Defs/ThingDef[defName = "StargateMod_AdvancedStargate"]/comps</xpath>
    <value>
    <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes><li>Stargate</li></focusTypes>
    </li>
    </value>
</Operation>


<Operation Class="PatchOperationAdd">
<xpath>Defs/ThingDef[defName = "StargateMod_OrlinStargate"]/comps</xpath>
    <value>
    <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes><li>Stargate</li></focusTypes>
    </li>
    </value>
</Operation>

</Patch>
