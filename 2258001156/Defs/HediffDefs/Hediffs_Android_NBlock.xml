<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<HediffDef>
		<defName>NBloated</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>Bloated</label>
		<description>It seems the viscosity of that nutrient paste has coated your insides, making you feel uneasy.</description>
		<makesSickThought>false</makesSickThought>
		<defaultLabelColor>(0.6,0.7,0.6)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>true</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.5</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>Uneasy</label>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.01</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.01</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.25</minSeverity>
				<label>Uncomfortable</label>
				<painOffset>0.15</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>Cramped</label>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>NEngergized</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<makesSickThought>false</makesSickThought>
		<label>Engergized</label>
		<description>The mechanisms in this unit seem to be working more efficiently.</description>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>

		<maxSeverity>2.0</maxSeverity>
		<isBad>false</isBad>
		<tendable>false</tendable>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>Little effect</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>Losing effect</label>
				<statOffsets>
					<WorkSpeedGlobal>.02</WorkSpeedGlobal>
					<ComfyTemperatureMin>-2</ComfyTemperatureMin>
					<ComfyTemperatureMax>2</ComfyTemperatureMax>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>.02</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.01</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.7</minSeverity>
				<label>Mild effect</label>
				<statOffsets>
					<WorkSpeedGlobal>.04</WorkSpeedGlobal>
					<ComfyTemperatureMin>-3</ComfyTemperatureMin>
					<ComfyTemperatureMax>3</ComfyTemperatureMax>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>.04</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.02</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1.5</minSeverity>
				<label>Effective</label>
				<statOffsets>
					<WorkSpeedGlobal>.06</WorkSpeedGlobal>
					<ComfyTemperatureMin>-5</ComfyTemperatureMin>
					<ComfyTemperatureMax>5</ComfyTemperatureMax>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>.06</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.03</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1.9</minSeverity>
				<label>Peak</label>
				<statOffsets>
					<WorkSpeedGlobal>.08</WorkSpeedGlobal>
					<ComfyTemperatureMin>-8</ComfyTemperatureMin>
					<ComfyTemperatureMax>8</ComfyTemperatureMax>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>.08</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.04</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>