<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<DamageDef Name="NBEMP">
		<defName>NBEMP</defName>
		<label>explosion</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<externalViolence>true</externalViolence>
		<!--<isExplosive>true</isExplosive>-->
		<externalViolenceForMechanoids>true</externalViolenceForMechanoids>
		<deathMessage>{0} has died in an explosion.</deathMessage>
		<hediff>Shredded</hediff>
		<hediffSolid>Crack</hediffSolid>
		<armorCategory>Heat</armorCategory>
		<minDamageToFragment>35</minDamageToFragment>
		<impactSoundType>Electric</impactSoundType>
		<defaultDamage>65</defaultDamage>
		<defaultStoppingPower>2</defaultStoppingPower>
		<defaultArmorPenetration>0.35</defaultArmorPenetration>
		<buildingDamageFactor>.75</buildingDamageFactor>
		<plantDamageFactor>1</plantDamageFactor>
		<explosionHeatEnergyPerCell>10</explosionHeatEnergyPerCell>
		<explosionSnowMeltAmount>0</explosionSnowMeltAmount>
		<explosionCellMote>Mote_BlastDry</explosionCellMote>
		<explosionColorCenter>(1, 0.5, 0.3)</explosionColorCenter>
		<explosionColorEdge>(0.6, 0.5, 0.4)</explosionColorEdge>
		<explosionInteriorMote>Mote_ElectricalSpark</explosionInteriorMote>
		<soundExplosion>Explosion_EMP</soundExplosion>
		<combatLogRules>Damage_Bomb</combatLogRules>
		<makesAnimalsFlee>true</makesAnimalsFlee>
	</DamageDef>
</Defs>
