<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Smoked meat for nomad</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--Remove Tofu as an ingredient in smoked  meat for nomad-->
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName="Make_SmokeMeat"]/fixedIngredientFilter/disallowedThingDefs</xpath>
					<value>
						
							<li>NBlock</li>
							<li>CannedNBlock</li>
				
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName="Make_SmokeMeat"]/defaultIngredientFilter/disallowedThingDefs</xpath>
					<value>
							<li>NBlock</li>
							<li>CannedNBlock</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>

