<Patch>

	<!-- ========== Add DefModExtension ========== -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/DamageDef[defName="Bomb"]</xpath>
		<value>
			<li Class="Bombastic.DamageDefExtension">
				<partsOnWhichToBuff>
					<li>Arm</li>
					<li>Leg</li>
                    <li>Hand</li>
                    <li>Foot</li>
                    <li>Shoulder</li>
					<li>Toe</li>
					<li>Finger</li>
				</partsOnWhichToBuff>
				<damageMult>2</damageMult>
			</li>
		</value>
	</Operation>
</Patch>