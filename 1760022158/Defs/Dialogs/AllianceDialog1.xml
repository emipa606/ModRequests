								<value>0.8</value>
							</li>
							<li>
								<key>8</key>
								<value>0.15</value>
							</li>
						</Transitions>
					</li>
					<li>
						<Label>EndCooms</Label>
						<!-- ключ -->
						<ResolveTree>True</ResolveTree>
						<ResolveSignal>конец</ResolveSignal>
