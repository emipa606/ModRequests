	<RecipeDef>
		<defName>SmeltingIronIngots</defName>
		<label>Smelt iron ingots</label>
		<description>Melt iron ore to get iron ingots.</description>
		<jobString>Smelts ingots</jobString>
		<workAmount>1200</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>IronOre</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<IronIngot>15</IronIngot>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>IronOre</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

