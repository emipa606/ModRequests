<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ResourceBase">
		<defName>HydrogenCylinder</defName>
		<label>Hydrogen cylinder</label>
		<description>A cylinder filled with hydrogen. Explosive.</description>
		<graphicData>
			<texPath>Things/Resources/Gas/Hydrogen</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<statBases>
			<MaxHitPoints>15</MaxHitPoints>
			<MarketValue>2</MarketValue>
			<Mass>0.4</Mass>
			<Flammability>70</Flammability>
		</statBases>
		<size>(1,1)</size>
		<comps>
			<li Class="RimOverhaul.Gas.CompProperties_Explosive_GasProp">
				<explosiveRadius>1</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<damageAmountBase>45</damageAmountBase>
				<explosiveExpandPerStackcount>0.5</explosiveExpandPerStackcount>
				<startWickHitPointsPercent>0.7</startWickHitPointsPercent>
			</li>
		</comps>
		<useHitPoints>true</useHitPoints>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>
	
	<ThingDef ParentName="ResourceBase">
		<defName>LiquefiedNaturalGasCylinder</defName>
		<label>Liquefied natural gas cylinder</label>
		<description>A cylinder filled with liquefied natural gas. Explosive.</description>
		<graphicData>
			<texPath>Things/Resources/Gas/LiquidGas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<statBases>
			<MaxHitPoints>15</MaxHitPoints>
			<MarketValue>2</MarketValue>
			<Mass>0.4</Mass>
			<Flammability>70</Flammability>
		</statBases>
		<size>(1,1)</size>
		<comps>
			<li Class="RimOverhaul.Gas.CompProperties_Explosive_GasProp">
				<explosiveRadius>1</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<damageAmountBase>35</damageAmountBase>
				<explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
				<startWickHitPointsPercent>0.7</startWickHitPointsPercent>
			</li>
		</comps>
		<useHitPoints>true</useHitPoints>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>
	
</Defs>
