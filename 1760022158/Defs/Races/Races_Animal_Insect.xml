<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseInsect">
    <defName>CaveSpelopede</defName>
    <label>Cave spelopede</label>
    <description>One of the few cave representatives of the planet. Small in size, the body is covered with rather dense chitinous armor. Sharp claws make him a dangerous enemy in close combat.</description>
    <statBases>
      <MoveSpeed>3.7</MoveSpeed>
      <ComfyTemperatureMin>-40</ComfyTemperatureMin>
      <MarketValue>200</MarketValue>
      <LeatherAmount>0</LeatherAmount>
      <ArmorRating_Blunt>0.23</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.23</ArmorRating_Sharp>
    </statBases>
    <tools>
      <li>
        <label>head claw</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>BeetleLikeWithClaw</body>
      <baseHungerRate>0.4</baseHungerRate>
      <baseBodySize>0.8</baseBodySize>
      <baseHealthScale>1.7</baseHealthScale>
      <gestationPeriodDays>12</gestationPeriodDays>
      <useMeatFrom>Megaspider</useMeatFrom>
      <wildness>1</wildness>
      <lifeExpectancy>6</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>EusocialInsectLarva</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>EusocialInsectJuvenile</def>
          <minAge>0.03</minAge>
        </li>
        <li>
          <def>EusocialInsectAdult</def>
          <minAge>0.2</minAge>
          <soundWounded>Pawn_Spelopede_Pain</soundWounded>
          <soundDeath>Pawn_Spelopede_Death</soundDeath>
          <soundCall>Pawn_Spelopede_Call</soundCall>
          <soundAngry>Pawn_Spelopede_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalInsect</li>
    </tradeTags>
  </ThingDef>

