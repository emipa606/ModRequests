<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 <!-- ====================================== Smock =========================================== -->

	<ThingDef ParentName="RHApparelMakeableBase_RHFactions">
		<defName>RNApparel_Parka_M81LMM</defName>
		<label>parka M81</label>
		<description>A parka for staying warm in even the coldest of temperatures. Has the M81 camo and the Last Man Mercs faction armband.</description>
		<graphicData>
			<texPath>Things/Apparel/Display/M81Fishtail</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
      <drawSize>0.90</drawSize>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>RHApparel_ShellCombat</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToMake>8000</WorkToMake>
			<Mass>3.8</Mass>
      <StuffEffectMultiplierArmor>0.35</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.00</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
		</statBases>
		
	  <equippedStatOffsets>
	  <WorkSpeedGlobal>0.10</WorkSpeedGlobal>
	  <MedicalTendSpeed>0.10</MedicalTendSpeed>
	  <!--<PainShockThreshold>0.05</PainShockThreshold>-->
	  <!--<ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>-->
    </equippedStatOffsets>
	
	<generateCommonality>0.05</generateCommonality>
	
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
                <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Shell/M81_Parka_New/M81Fishtail</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>RH_LMM_Parka</li>
				<li>PassiveCamo_Woodland_High</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
	</ThingDef>

