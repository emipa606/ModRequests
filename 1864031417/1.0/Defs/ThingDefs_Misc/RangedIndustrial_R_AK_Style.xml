      <texPath>Things/Item/Equipment/Rifles/AK/AKM</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>3.75</Mass>
      <AccuracyTouch>0.63</AccuracyTouch>
      <AccuracyShort>0.74</AccuracyShort>
      <AccuracyMedium>0.64</AccuracyMedium>
      <AccuracyLong>0.54</AccuracyLong>
      <RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>9</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RNBullet_762x39_Rifle</defaultProjectile>
