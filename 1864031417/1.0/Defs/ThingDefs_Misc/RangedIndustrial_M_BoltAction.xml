<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================================= Bolt Actions ==================================== -->

        <!-- ================================= CS LR4 ==================================== -->

  <ThingDef ParentName="RNBaseBoltAction">
    <defName>RNGun_CSLR4Sn</defName>
    <label>CS-LR4</label>
    <description>The CS/LR4 is a Chinese bolt-action sniper rifle designed and manufactured by Norinco. 
	
It fires the Western 7.62x51mm NATO cartridge instead of the more traditional 5.8x42mm Chinese round. It is also relatively accurate, capable of 1 MOA at 300m and a minimum range of 600m.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/M_Bolt_Action/CS-LR4</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
	<equippedAngleOffset>40</equippedAngleOffset>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.58</AccuracyTouch>
      <AccuracyShort>0.69</AccuracyShort>
      <AccuracyMedium>0.84</AccuracyMedium>
      <AccuracyLong>0.87</AccuracyLong>
      <RangedWeapon_Cooldown>2.4</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RNBullet_762x51mm_Sniper</defaultProjectile>
        <warmupTime>3.55</warmupTime>
        <range>47</range>
        <soundCast>RNShot_CSLR4Sn</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags Inherit="False">
      <li>SniperRifle</li>
	  <li>RN_CSLR4</li>
    </weaponTags>
  </ThingDef>
  
  
