<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ====================================== Combats LMCT =========================================== -->
	
	  <!-- ====================================== Combat Fleece =========================================== -->
  
  	 <ThingDef ParentName="RHApparelMakeableBase_RHFactions">
    <defName>RNApparel_combats_Softshell_LMCT</defName>
    <description>Custom made combat softshell for Last Man Contingent operators. Designed to be used for both Arctic and Urban conditions.
	
Has blue jeans and a crimson red softshell jacket, lightweight material with armpit zippers for hotter climate.</description>
    <label>combat softshell (LMCT)</label>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Display/LMCT_CombJack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>160</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>RHApparel_Combat</li>
    </thingCategories>
    <statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>9000</WorkToMake>
      <Mass>0.60</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
	
	<equippedStatOffsets>
	  <ShootingAccuracyPawn>0.02</ShootingAccuracyPawn>
	  <WorkSpeedGlobal>0.20</WorkSpeedGlobal>
	  <ForagedNutritionPerDay>0.25</ForagedNutritionPerDay>
    </equippedStatOffsets>
	
		<apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
		<li>Shoulders</li>
        <li>Arms</li>
		<li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Onskin/LMCT_CombJack</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <!--<li>IndustrialAdvanced</li>-->
        <li>RH_Onskin_LMCT_Operator</li>
		<li>PassiveCamo_Urban_Low</li>
		<!--<li>IndustrialBasic</li>-->
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
	
