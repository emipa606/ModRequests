<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<ThingDef ParentName="HatMakeableBase" Name="Zwart_Soberana_Cap">
		<defName>Apparel_Zwart_Soberana_Cap</defName>
		<label>soberana cap</label>
		<description>A simple soft hat made out of fabric, sporting the Soberana logo.</description>
		<possessionCount>1</possessionCount>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<displayPriority>100</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Apparel/Headgear/SoberanaCap/SoberanaCap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.2, 1.2)</drawSize>
		</graphicData>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
		  <li>Fabric</li>
		</stuffCategories>
		<thingCategories>
          <li>Apparel</li>
        </thingCategories>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>1200</WorkToMake>
			<Mass>0.14</Mass>
			<StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.45</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>0.15</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<developmentalStageFilter>Child, Adult</developmentalStageFilter>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Headgear/SoberanaCap/SoberanaCap</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
		<tradeTags>
			<li>BasicClothing</li>
		</tradeTags>
	</ThingDef>
	
</Defs>