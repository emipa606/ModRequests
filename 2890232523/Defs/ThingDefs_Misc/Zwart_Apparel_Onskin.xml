<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_Zwart_Soberana_Uniform</defName>
    <description>A basic uniform of Soberana design.</description>
    <label>soberana uniform</label>
    <recipeMaker>
		<researchPrerequisite>ComplexClothing</researchPrerequisite>
		<displayPriority>100</displayPriority>
	</recipeMaker>
    <graphicData>
      <texPath>Apparel/Clothing/SoberanaUniform/SoberanaUniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>2.00</drawSize>	  
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>3700</WorkToMake>
      <Mass>0.3</Mass>
      <StuffEffectMultiplierArmor>0.35</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.40</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.65</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>		
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Clothing/SoberanaUniform/SoberanaUniform</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	<tradeTags>
			<li>BasicClothing</li>
		</tradeTags>
  </ThingDef>

</Defs>