<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <ThingDef ParentName="BaseVFEMachine">

        <defName>MakeshiftHauler</defName>
        <label>Makeshift Hauler</label>
        <description>A makeshift version of the autohauler robot. Not very energy efficient, nor is it fast, but it gets the job done to some degree.</description>

        <statBases>
            <MoveSpeed>1.75</MoveSpeed>
            <ArmorRating_Blunt>0.12</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.12</ArmorRating_Sharp>
            <PsychicSensitivity>0.15</PsychicSensitivity>
        </statBases>

        <tools>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>1.4</power>
                <cooldownTime>2.2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
            </li>
        </tools>

        <race>
            <intelligence>ToolUser</intelligence>
            <thinkTreeMain>VFE_Mechanoids_Machine</thinkTreeMain>
            <body>MechanicalCentipede</body>
            <baseBodySize>0.5</baseBodySize>
            <baseHealthScale>1</baseHealthScale>
            <lifeStageAges>
                <li>
                    <def>MechanoidFullyFormed</def>
                    <minAge>0</minAge>
                    <soundWounded>VFE_Pawn_HandmadeMech_Wounded</soundWounded>
                    <soundDeath>VFE_Pawn_HandmadeMech_Death</soundDeath>
                    <soundCall>VFE_Pawn_HandmadeMech_Call</soundCall>
                </li>
            </lifeStageAges>
            <soundCallIntervalRange>1000~2000</soundCallIntervalRange>
            <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
        </race>

        <butcherProducts>
            <ComponentIndustrial>1</ComponentIndustrial>
            <Steel>25</Steel>
        </butcherProducts>

        <comps>
            <li Class="VFE.Mechanoids.CompProperties_Machine">
                <hoursActive>48</hoursActive>
            </li>
        </comps>

    </ThingDef>

    <PawnKindDef ParentName="BaseMechanoidKind">
        <defName>MakeshiftHauler</defName>
        <label>Makeshift Hauler</label>
        <race>MakeshiftHauler</race>
        <combatPower>99999</combatPower>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>MakeshiftHaulerText/MakeshiftHauler</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>2</drawSize>
                    <shadowData>
                        <volume>(0.6, 0.8, 0.6)</volume>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>

</Defs>