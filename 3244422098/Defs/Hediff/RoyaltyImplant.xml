<?xml version="1.0" encoding="utf-8" ?>
<Defs>

          <!-- royal eye -->

          <HediffDef ParentName="AddedBodyPartBase">
            <defName>GS_RoyalEye</defName>
            <label>Royal eye</label>
            <labelNoun>a royal eye</labelNoun>
            <description>An installed royal eye.</description>
            <descriptionHyperlinks><ThingDef>GS_RoyalEye</ThingDef></descriptionHyperlinks>
            <spawnThingOnRemoved>GS_RoyalEye</spawnThingOnRemoved>
            <woundAnchorRange>0</woundAnchorRange>
            <displayWound>true</displayWound>
            <addedPartProps>
              <solid>true</solid>
              <partEfficiency>1.4</partEfficiency>
              <betterThanNatural>false</betterThanNatural>
            </addedPartProps>
            <stages>
              <li>
                    <statOffsets>
                      <PawnBeauty>1</PawnBeauty>
                      <SocialImpact>0.35</SocialImpact>
                    </statOffsets>
              </li>
            </stages>
            <renderNodeProperties>
            <li Class="PawnRenderNodeProperties_Eye">
              <workerClass>PawnRenderNodeWorker_HediffEye</workerClass>
              <texPath>Things/Pawn/Wounds/RoyalEye</texPath>
              <parentTagDef>Head</parentTagDef>
              <drawSize>0.15</drawSize>
              <drawData>
                <defaultData>
                  <layer>70</layer>
                  <offset>(-0.01, 0, -0.23)</offset>
                </defaultData>
                <dataWest>
                  <flip>true</flip>
                </dataWest>
              </drawData>
            </li>
          </renderNodeProperties>
          </HediffDef>
        
          <ThingDef ParentName="BodyPartBionicBase">
            <defName>GS_RoyalEye</defName>
            <label>Royal eye</label>
            <description>A prestigious yet advanced artificial eye. A complex mannerism analyzer compares and studies the body language and speech patterns of users, suggesting to the implantee the best ways to respond or react. With its biogel nerve-link, internal signal pre-processor, and wide-spectrum sensors, it is better than a biological eye in almost every way.</description>
            <descriptionHyperlinks><RecipeDef>InstallRoyalEye</RecipeDef></descriptionHyperlinks>
            <graphicData>
              <texPath>Things/Implants/RoyalEyeImplant</texPath>
              <shaderType>CutoutComplex</shaderType>
              <graphicClass>Graphic_Single</graphicClass>
              <drawSize>0.90</drawSize>
              <color>(255,255,255)</color>
            </graphicData>
            <costList>
              <Plasteel>20</Plasteel>
              <Steel>12</Steel>
              <ComponentSpacer>1</ComponentSpacer>
            </costList>
            <thingSetMakerTags>
			<li>RewardStandardMidFreq</li>
			<li>ImplantEmpireRoyal</li>
			</thingSetMakerTags>
			
            <statBases>
              <Mass>0.5</Mass>
			  <MarketValue>1200</MarketValue>
            </statBases>
			
	<recipeMaker>
      <researchPrerequisite>NeuralComputation</researchPrerequisite>
	  <recipeUsers>
      <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <tradeTags>
      <li>ImplantEmpireRoyal</li>
    </tradeTags>
    <techHediffsTags>
      <li>ImplantEmpireRoyal</li>
    </techHediffsTags>
          </ThingDef>
        
		
          <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
            <defName>InstallRoyalEye</defName>
            <label>install royal eye</label>
            <description>Install a royal eye.</description>
            <descriptionHyperlinks>
              <ThingDef>GS_RoyalEye</ThingDef>
              <HediffDef>GS_RoyalEye</HediffDef>
            </descriptionHyperlinks>
            <jobString>Installing royal eye.</jobString>
            <ingredients>
              <li>
                <filter>
                  <thingDefs>
                    <li>GS_RoyalEye</li>
                  </thingDefs>
                </filter>
                <count>1</count>
              </li>
            </ingredients>
            <fixedIngredientFilter>
              <thingDefs>
                <li>GS_RoyalEye</li>
              </thingDefs>
            </fixedIngredientFilter>
            <appliedOnFixedBodyParts>
              <li>Eye</li>
            </appliedOnFixedBodyParts>
            <addsHediff>GS_RoyalEye</addsHediff>
          </RecipeDef>
		  
		  
		  
		  </Defs>