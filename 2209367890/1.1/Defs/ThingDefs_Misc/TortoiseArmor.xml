  <ThingDef ParentName="VBY_TurtleArmorBase">
    <defName>VBY_TortoiseArmor</defName>
    <label>tortoise armor</label>
    <description>Cleverly crafted tortoise shells bound with leather straps to create fairly durable armor.</description>
    <recipeMaker>      
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TortoiseshellArmor/TortoiseshellArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>70</costStuffCount>
	<costList>
      <VBY_TortoiseShell>12</VBY_TortoiseShell>      
    </costList>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
	  <MarketValue>420</MarketValue>
      <Mass>8</Mass>
      <StuffEffectMultiplierArmor>0.30</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.45</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
	  <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
	  <EquipDelay>10</EquipDelay>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.2</MoveSpeed>
    </equippedStatOffsets>    
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>        
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TortoiseshellArmor/TortoiseshellArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>        
		<li>Neolithic</li>
		<li>Tribal</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    
