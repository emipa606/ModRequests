<Defs>

  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Nihal</defName>
    <label>Ni'Hal skin</label>
    <description>A smooth silky, somewhat elastic texture, Ni'Hal skin is the perfect material to craft tights out of, you never have to worry about a rip!</description>
    <graphicData>
      <color>(109,99,75)</color>
      <colorTwo>(109,200,75)</colorTwo>
    </graphicData>
    <statBases>
      <MarketValue>8</MarketValue>
      <StuffPower_Armor_Sharp>1.0</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.2</StuffPower_Armor_Blunt>
      <StuffPower_Insulation_Cold>6</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>25</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(109,99,75)</color>
      <commonality>0.001</commonality>
    </stuffProps>
  </ThingDef>
  
