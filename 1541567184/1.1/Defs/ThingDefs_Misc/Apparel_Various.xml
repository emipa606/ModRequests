<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
	<ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_NiHalBodysuit</defName>
    <label>ni'hal bodysuit</label>
    <description>A thick and form-fitted bodysuit, common in Ni'Hal 'fashion' and also standard in their uniforms.
Special care has been taken to cover as much of the body as possible, both for protection and prudishness.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/NiHalBodysuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>150</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>12</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Feet</li>
        <li>Hands</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NiHalBodysuit</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>NiHalTrooper</li>
        <li>NiHalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>NiHalSoldier</li>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

 <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_CatfishArmor</defName>
    <label>ni'hal exoskeletal armor</label>
    <description>Exoskeletal armor usually used by assault troops from The Ni'Hal Empire.\n\nSlim and advanced, and the armor's servo-motors greatly increase the wearer's load bearing capacity and assist in weapon-handling.</description>
    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/NihalPoweredExoskeleton/CatfishArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <MaxHitPoints>375</MaxHitPoints>
      <Mass>7</Mass>
      <ArmorRating_Blunt>0.43</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <Insulation_Cold>45</Insulation_Cold>
      <Insulation_Heat>25</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
	  <ShootingAccuracyPawn>.8</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <ComponentIndustrial>8</ComponentIndustrial>
      <Plasteel>100</Plasteel>
      <ComponentSpacer>3</ComponentSpacer>
      <Uranium>20</Uranium>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NihalPoweredExoskeleton/CatfishArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>NiHalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>NiHalSoldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

