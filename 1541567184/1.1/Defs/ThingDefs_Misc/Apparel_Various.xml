    </thingCategories>
    <costList>
      <ComponentIndustrial>3</ComponentIndustrial>
      <Cloth>50</Cloth>
      <Steel>90</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NiHalTrooperArmor/TroopCatfishArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>NiHalTrooper</li>
      </tags>
      <defaultOutfitTags>
        <li>NiHalTrooper</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>