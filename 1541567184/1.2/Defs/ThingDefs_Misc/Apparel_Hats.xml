<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_NihalPowerArmorHelmet</defName>
    <label>ni'hal exoskeleton helmet</label>
    <description>A part of powered exoskeleton armor set, mostly used by Ni'Hal infantry. Made lightweight for use while swimming and so as to be cheap to make.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/NihalPoweredExoskeleton/catfishhat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>21000</WorkToMake>
      <MaxHitPoints>175</MaxHitPoints>
      <Mass>1</Mass>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
      <ArmorRating_Heat>0.6</ArmorRating_Heat>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>4</Insulation_Heat>
    </statBases>
    <costList>
      <ComponentSpacer>1</ComponentSpacer>
      <Plasteel>25</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NihalPoweredExoskeleton/catfishhat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>EVA</li>
        <li>NiHalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>NiHalSoldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_NihalPurifierHelmet</defName>
    <label>ni'hal purifier helmet</label>
    <description>A part of powered exoskeleton armor set, intended for use by Ni'Hal officers. Built to be showy and to allow the wearer to order their troopers about with a big ol' speaker.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PurifierArmor/PurifierHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>24000</WorkToMake>
      <MaxHitPoints>270</MaxHitPoints>
      <Mass>1</Mass>
      <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
      <ArmorRating_Heat>1</ArmorRating_Heat>
      <Insulation_Cold>12</Insulation_Cold>
      <Insulation_Heat>7</Insulation_Heat>
    </statBases>
     <equippedStatOffsets>
	 <ShootingAccuracyPawn>0.1</ShootingAccuracyPawn>
         <AimingDelayFactor>-0.1</AimingDelayFactor>
         <ToxicSensitivity>-0.10</ToxicSensitivity>
         <PsychicSensitivity>-0.10</PsychicSensitivity>
		 <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <costList>
       <ComponentSpacer>1</ComponentSpacer>
      <Plasteel>50</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PurifierArmor/PurifierHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>EVA</li>
        <li>NiHalPurifier</li>
      </tags>
      <defaultOutfitTags>
        <li>NiHalOfficer</li>
      </defaultOutfitTags>
    </apparel>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
  </ThingDef>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_NihalTrooperArmorHelmet</defName>
    <label>ni'hal trooper helmet</label>
    <description>A part of an unpowered standardized armor set, used by the Ni'Hal when they don't feel like giving out free power armor..</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/NiHalTrooperArmor/troopcatfishhat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>1</Mass>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.67</ArmorRating_Sharp>
      <ArmorRating_Heat>0.55</ArmorRating_Heat>
      <Insulation_Cold>8</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
    </statBases>
    <costList>
      <ComponentIndustrial>2</ComponentIndustrial>
      <Cloth>20</Cloth>
      <Steel>55</Steel>
      <Plasteel>15</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NiHalTrooperArmor/troopcatfishhat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>NiHalTrooper</li>
      </tags>
      <defaultOutfitTags>
        <li>NiHalTrooper</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>