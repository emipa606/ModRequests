		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>Purification Commisar</leaderTitle>
		<colorSpectrum>
		  <li>(0.00, 0.35, 0.00)</li>
		</colorSpectrum>
		<startingGoodwill>
		  <min>-100</min>
		  <max>-90</max>
