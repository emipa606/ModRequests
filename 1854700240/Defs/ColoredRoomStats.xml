<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--======= Primary stats (calcualated from physical conditions) =======-->

  <RoomStatDef>
    <defName>Impressiveness</defName>
    <label>impressiveness</label>
    <workerClass>RoomStatWorker_Impressiveness</workerClass>
    <updatePriority>1</updatePriority>
    <displayRounded>true</displayRounded>
    <roomlessScore>0</roomlessScore>
    <scoreStages>
      <li>
        <label>&lt;color=#DA123B&gt;awful (1/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>20</minScore>
        <label>&lt;color=#F58785&gt;dull (2/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>30</minScore>
        <label>&lt;color=#FF8C00&gt;mediocre (3/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>40</minScore>
        <label>&lt;color=#FFFF00&gt;decent (4/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>50</minScore>
        <label>&lt;color=#C8FF00&gt;slightly impressive (5/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>65</minScore>
        <label>&lt;color=#55B105&gt;somewhat impressive (6/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>85</minScore>
        <label>&lt;color=#1BD8D2&gt;very impressive (7/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>120</minScore>
        <label>&lt;color=#5498EB&gt;extremely impressive (8/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>170</minScore>
        <label>&lt;color=#644187&gt;unbelievably impressive (9/10)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>240</minScore>
		<label>&lt;color=#AF00AF&gt;wondrously impressive (10/10)&lt;/color&gt;</label>
      </li>
    </scoreStages>
  </RoomStatDef>
  
  <RoomStatDef>
    <defName>Wealth</defName>
    <label>wealth</label>
    <workerClass>RoomStatWorker_Wealth</workerClass>
    <updatePriority>2</updatePriority>
    <displayRounded>true</displayRounded>
    <roomlessScore>0</roomlessScore>
    <scoreStages>
      <li>
        <label>&lt;color=#DA123B&gt;impoverished (1/9)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>500</minScore>
        <label>&lt;color=#F58785&gt;somewhat poor (2/9)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>700</minScore>
        <label>&lt;color=#FF8C00&gt;mediocre (3/9)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>2000</minScore>
        <label>&lt;color=#FFFF00&gt;somewhat rich (4/9)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>4000</minScore>
        <label>&lt;color=#55B105&gt;rich (5/9)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>10000</minScore>
        <label>&lt;color=#1BD8D2&gt;luxurious (6/9)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>40000</minScore>
        <label>&lt;color=#5498EB&gt;very luxurious (7/9)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>100000</minScore>
        <label>&lt;color=#644187&gt;extremely luxurious (8/9)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>1000000</minScore>
        <label>&lt;color=#AF00AF&gt;unbelievably luxurious (9/9)&lt;/color&gt;</label>
      </li>
    </scoreStages>
  </RoomStatDef>
  
  <RoomStatDef>
    <defName>Space</defName>
    <label>space</label>
    <workerClass>RoomStatWorker_Space</workerClass>
    <updatePriority>2</updatePriority>
    <displayRounded>true</displayRounded>
    <roomlessScore>350</roomlessScore>
    <scoreStages>
      <li>
        <label>&lt;color=#DA123B&gt;cramped (1/7)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>8</minScore>
        <label>&lt;color=#FF8C00&gt;rather tight (2/7)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>22</minScore>
        <label>&lt;color=#FFFF00&gt;average-sized (3/7)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>35</minScore>
        <label>&lt;color=#55B105&gt;somewhat spacious (4/7)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>69</minScore>
        <label>&lt;color=#5498EB&gt;quite spacious (5/7)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>113</minScore>
        <label>&lt;color=#644187&gt;very spacious (6/7)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>200</minScore>
        <label>&lt;color=#AF00AF&gt;extremely spacious (7/7)&lt;/color&gt;</label>
      </li>
    </scoreStages>
  </RoomStatDef>
  
  <RoomStatDef>
    <defName>Beauty</defName>
    <label>beauty</label>
    <workerClass>RoomStatWorker_Beauty</workerClass>
    <updatePriority>2</updatePriority>
    <roomlessScore>0</roomlessScore>
    <scoreStages>
      <li>
        <label>&lt;color=#DA123B&gt;hideous (1/8)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>-3.5</minScore>
        <label>&lt;color=#FF8C00&gt;ugly (2/8)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>0.0</minScore>
        <label>&lt;color=#FFFF00&gt;neutral (3/8)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>2.4</minScore>
        <label>&lt;color=#55B105&gt;pretty (4/8)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>5.0</minScore>
        <label>&lt;color=#1BD8D2&gt;beautiful (5/8)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>15.0</minScore>
        <label>&lt;color=#5498EB&gt;very beautiful (6/8)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>50.0</minScore>
        <label>&lt;color=#644187&gt;extremely beautiful (7/8)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>100.0</minScore>
        <label>&lt;color=#AF00AF&gt;unbelievably beautiful (8/8)&lt;/color&gt;</label>
      </li>
    </scoreStages>
  </RoomStatDef>
  
  <RoomStatDef>
    <defName>Cleanliness</defName>
    <label>cleanliness</label>
    <workerClass>RoomStatWorker_Cleanliness</workerClass>
    <updatePriority>2</updatePriority>
    <roomlessScore>0</roomlessScore>
    <scoreStages>
      <li>
        <label>&lt;color=#DA123B&gt;very dirty (1/5)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>-1.1</minScore>
        <label>&lt;color=#FF8C00&gt;dirty (2/5)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>-0.4</minScore>
        <label>&lt;color=#FFFF00&gt;slightly dirty (3/5)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>-0.05</minScore>
        <label>&lt;color=#55B105&gt;clean (4/5)&lt;/color&gt;</label>
      </li>
      <li>
        <minScore>0.4</minScore>
        <label>&lt;color=#AF00AF&gt;sterile (5/5)&lt;/color&gt;</label>
      </li>
    </scoreStages>
  </RoomStatDef>
  
</Defs>
