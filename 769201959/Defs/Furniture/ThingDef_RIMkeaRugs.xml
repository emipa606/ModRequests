<?xml version="1.0" encoding="utf-8"?>
<Defs>



	<!--   Rugs   -->


	<ThingDef ParentName="RIKFurnitureBase">
		<defName>RUGUN</defName>
		<label>RUGUN rug</label>
		<thingClass>Building</thingClass>
		<researchPrerequisites>
			<li>CarpetMaking</li>
		</researchPrerequisites>
		<graphicData>
			<texPath>Things/Buildings/Decor/RUGUN</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3.3)</drawSize>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<building>    
			<isEdifice>false</isEdifice>
		</building>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>Standable</passability>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToBuild>550</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>15</Beauty>
			<Cleanliness>0.5</Cleanliness>
			<Mass>6</Mass>
		</statBases>
		<size>(3,3)</size>
		<stuffCategories>
			<li>Leathery</li>
			<li>Fabric</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<description>Rug from the "RIMkea Cozy Rugs Collection" 3x3</description>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<rotatable>false</rotatable>
		<comps>
			<li Class="CompProperties_RoomIdentifier">
				<roomStat>Impressiveness</roomStat>
			</li>
		</comps>
		<clearBuildingArea>false</clearBuildingArea>
		<saveCompressible>false</saveCompressible>
	</ThingDef>


