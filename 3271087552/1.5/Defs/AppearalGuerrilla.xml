<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>QM_GuerrillaMask</defName>
        <label>Guerrilla gasmask</label>
        <description>Guerrilla pattern gasmask. Using a flak armor it provides basic protection in facial area while providing the wearer toxic gas resistance. Manufactured and distributed by Civil resistance, this gasmask is worn by Free Laborours often with other head pieces.</description>
		<techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Headgear/QM_Guerrilla/QM_Guerrilla</texPath>
            <graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>0.8</drawSize>
        </graphicData>
        <generateCommonality>0.1</generateCommonality>
        <recipeMaker>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<researchPrerequisite>QM_GuerrillaArmMan</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>TableMachining</li>
			</recipeUsers>
		</recipeMaker>
        <statBases>
            <WorkToMake>6000</WorkToMake>
            <MaxHitPoints>70</MaxHitPoints>
            <Mass>0.8</Mass>
            <Flammability>1.0</Flammability>
            <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
            <ArmorRating_Heat>0.2</ArmorRating_Heat>
            <Insulation_Cold>0</Insulation_Cold>
            <Insulation_Heat>0</Insulation_Heat>
            <EquipDelay>1</EquipDelay>
        </statBases>
        <costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<Cloth>10</Cloth>
			<Steel>45</Steel>
        </costList>
        <equippedStatOffsets>
			<ToxicEnvironmentResistance>0.8</ToxicEnvironmentResistance>
        </equippedStatOffsets>
        <apparel>
            <immuneToToxGasExposure MayRequire="Ludeon.RimWorld.Biotech">true</immuneToToxGasExposure>
			<useWornGraphicMask>true</useWornGraphicMask>
            <bodyPartGroups Inherit="False">
                <li>Eyes</li>
				<li>Mouth</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Headgear/QM_Guerrilla/QM_Guerrilla</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
				<li>Worker</li>
            </defaultOutfitTags>
			<drawData>
				<defaultData>
					<layer>61</layer>
				</defaultData>
				<dataNorth>
				  <layer>-3</layer>
				</dataNorth>
			  </drawData>
			<renderSkipFlags>
				<li>None</li>
			</renderSkipFlags>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <tags>
                <li>QM_Armor_RebelMask</li>
            </tags>
        </apparel>
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <only>(0.58,0.16,0.11)</only>
			</li>
		  </options>
		</colorGenerator>
    </ThingDef>
	
	<ThingDef ParentName="ArmorSmithableBase">
		<defName>QM_GuerrillaJacket</defName>
		<label>Guerrilla jacket</label>
		<description>Guerrilla pattern jacket. Unlike Flak jacket, this jacket only protects wearer's upper chest area. The unhinder movement makes this perfect for the hit and run tactic while still protecting the wearer's vidal area. Manufactured and distributed by Civil resistance.</description>
		<graphicData>
			<texPath>Things/Apparel/QM_GuerrillaJacket/QM_Guerrilla</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>0.8</drawSize>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<generateCommonality>0.1</generateCommonality>
		<recipeMaker>
			<researchPrerequisite>QM_GuerrillaArmMan</researchPrerequisite>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<recipeUsers Inherit="False">
				<li>TableMachining</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Cloth>25</Cloth>
			<Steel>55</Steel>
        </costList>
		<statBases>
			<WorkToMake>4000</WorkToMake>
			<MaxHitPoints>80</MaxHitPoints>
			<Mass>1.9</Mass>
			<ArmorRating_Sharp>0.6</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
            <ArmorRating_Heat>0.2</ArmorRating_Heat>
            <Insulation_Cold>5</Insulation_Cold>
            <Insulation_Heat>25</Insulation_Heat>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<useWornGraphicMask>true</useWornGraphicMask>
			<wornGraphicPath>Things/Apparel/QM_GuerrillaJacket/QM_Guerrilla</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>QM_Armor_RebelJacket</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <only>(0.58,0.16,0.11)</only>
			</li>
		  </options>
		</colorGenerator>
	</ThingDef>
	
