<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<ThingDef ParentName="ArmorMachineableBase">
        <defName>QM_PeoplesFrontArmor</defName>
        <label>People's Front pattern armor</label>
		<techLevel>Spacer</techLevel>
        <description>Developed by the Civil Resistance. It is a power armor designed for void-warfare. This power armor stands out for its affordability, making it accessible for large-scale production and deployment. Despite its advantages in cost and production efficiency, the armor offers lower protection compared to its more advanced counterparts.</description>
        <graphicData>
            <texPath>Things/Apparel/QM_PeopleFront/QM_PeopleFront</texPath>
            <graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
        </graphicData>
        <generateCommonality>0.1</generateCommonality>
       <recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>QM_GuerrillaPowerArmMan</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
        <statBases>
            <WorkToMake>40000</WorkToMake>
            <MaxHitPoints>320</MaxHitPoints>
            <Mass>16.8</Mass>
            <Flammability>0.0</Flammability>
            <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
            <ArmorRating_Heat>1.0</ArmorRating_Heat>
            <Insulation_Cold>100</Insulation_Cold>
            <Insulation_Heat>55</Insulation_Heat>
            <EquipDelay>8</EquipDelay>
        </statBases>
        <costList>
            <ComponentSpacer>3</ComponentSpacer>
			<Plasteel>80</Plasteel>
			<DevilstrandCloth>50</DevilstrandCloth>
			<Uranium>30</Uranium>
        </costList>
        <equippedStatOffsets>    
			<MentalBreakThreshold>-0.12</MentalBreakThreshold>
			<Flammability>-0.6</Flammability>
            <ToxicEnvironmentResistance>0.2</ToxicEnvironmentResistance>
			<DecompressionResistance MayRequire="kentington.saveourship2">0.75</DecompressionResistance>
            <VacuumSpeedMultiplier MayRequire="kentington.saveourship2">4</VacuumSpeedMultiplier>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
				<li>Feet</li>
				<li>Hands</li>
            </bodyPartGroups>
			<useWornGraphicMask>true</useWornGraphicMask>
            <wornGraphicPath>Things/Apparel/QM_PeopleFront/QM_PeopleFront</wornGraphicPath>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <tags>
                <li>QM_Armor_PeopleFront</li>
            </tags>
        </apparel>
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <only>(0.78,0.64,0.38)</only>
			</li>
		  </options>
		</colorGenerator>
        <tickerType>Normal</tickerType>
		<comps>
            <li MayRequire="kentington.saveourship2">
                <compClass>SaveOurShip2.CompEVA</compClass>
            </li>
        </comps>
    </ThingDef>
	
