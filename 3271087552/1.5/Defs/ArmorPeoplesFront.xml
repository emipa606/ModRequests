            </tags>
        </apparel>
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <only>(0.78,0.64,0.38)</only>
			</li>
		  </options>
		</colorGenerator>
    </ThingDef>
	

	

