<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== People's Front Armor ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontArmor"]/statBases</xpath>
		<value>
			<Bulk>69</Bulk>
			<WornBulk>10</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontArmor"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>19</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontArmor"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>60</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontArmor"]/equippedStatOffsets</xpath>
		<value>
			<CarryWeight>45</CarryWeight>
			<CarryBulk>30</CarryBulk>
			<MeleeDodgeChance>-0.15</MeleeDodgeChance>
			<Suppressability>-0.5</Suppressability>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontArmor"]/equippedStatOffsets/Flammability</xpath>
	</Operation>
	
	
	<!-- ========== People's Front Helmet ========== -->


	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontHelmet"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>2</WornBulk>
			<NightVisionEfficiency_Apparel>0.75</NightVisionEfficiency_Apparel>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontHelmet"]/statBases/Mass</xpath>
		<value>
			<Mass>6.6</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontHelmet"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>19</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontHelmet"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>60</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontHelmet"]/equippedStatOffsets</xpath>
		<value>
			<equippedStatOffsets>
				<ToxicEnvironmentResistance>0.80</ToxicEnvironmentResistance>
				<SmokeSensitivity>-1</SmokeSensitivity>
				<MentalBreakThreshold>-0.05</MentalBreakThreshold>
				<ToxicResistance>0.8</ToxicResistance>
			</equippedStatOffsets>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="QM_PeoplesFrontHelmet"]/apparel/layers</xpath>
		<value>
			<li>OnHead</li>
			<li>StrappedHead</li>
		</value>
	</Operation>
	

</Patch>