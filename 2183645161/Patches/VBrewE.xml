<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Brewing Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[@Name="VBE_MixJuiceBase"]/fixedIngredientFilter/categories/li[text()="VCE_Fruit"]</xpath>
					<value>
						<li>RC2_FruitsRaw</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[@Name="VBE_MixJuiceBase"]/defaultIngredientFilter/categories/li[text()="VCE_Fruit"]</xpath>
					<value>
						<li>RC2_FruitsRaw</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="VBE_MixJuice"]/ingredients/li/filter/categories/li[text()="VCE_Fruit"]</xpath>
					<value>
						<li>RC2_FruitsRaw</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>