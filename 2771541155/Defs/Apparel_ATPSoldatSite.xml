<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>ATPSoldatSite</defName>
    <label>ATP soldat site</label>
    <description>Originally, they were to be implanted in the body, but this one seems to be a replica to be worn over the head. Therefore, there is no yellow blood and the eyes remain even if they are removed.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/Item/ATPSoldatSite/ATPSoldatSite</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>2.0</uiIconScale>
    <costStuffCount>40</costStuffCount>
    <statBases>
    <MarketValue>99999</MarketValue>
      <WorkToMake>3500</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <tradeability>None</tradeability>
    <recipeMaker>
      <researchPrerequisite>RimCombat</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/ATPSoldatSite/ATPSoldatSite</wornGraphicPath>
      <layers>
        <li>EyeCover</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
</Defs>