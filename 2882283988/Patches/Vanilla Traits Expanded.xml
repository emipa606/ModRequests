<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Traits Expanded</li>
		</mods>		

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
				<xpath>Defs/CM_Callouts.CalloutConstantByTraitDef[defName="CM_Callout_SpicyTraits"]/traits</xpath>
				<value>
					<li>VTE_Brave</li>
					<li>VTE_AnimalHater</li>
					<li>VTE_Rebel</li>
					<li>VTE_Vengeful</li>
					<li>VTE_MadSurgeon</li>
					<li>VTE_Schizoid</li>
				
				</value>
				</li>
				<li Class="PatchOperationAdd">
				<xpath>Defs/CM_Callouts.CalloutConstantByTraitDef[defName="CM_Callout_MildTraits"]/traits</xpath>
				<value>
					<li>VTE_WorldWeary</li>
					<li>VTE_Coward</li>
					<li>VTE_Submissive</li>
					<li>VTE_Dunce</li>
					<li>VTE_Squeamish</li>
					<li>VTE_Anxious</li>
				</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
