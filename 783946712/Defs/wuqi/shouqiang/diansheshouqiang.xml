<ThingDefs>
    

 <ThingDef ParentName="BaseBullet">
    <defName>Bullet_zuieshouqiang</defName>
    <label>pistol bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <DamageAmountBase>9</DamageAmountBase>
      <Speed>50</Speed>
    </projectile>
  </ThingDef>
  
  <ThingDef ParentName="zeq">
    <defName>zuieshouqiang</defName>
    <label>H-1点射手枪</label>
    <description>罪恶帝国很常见的武器之一，因携带方便又已收藏，差不多成为携枪一族都会带的武器</description>
    <graphicData>
      <texPath>wuqi/shouqiang/yi</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractPistol</soundInteract>
    <statBases>
      <WorkToMake>1</WorkToMake>
      <MarketValue>300</MarketValue>
      <AccuracyTouch>0.91</AccuracyTouch>
      <AccuracyShort>0.71</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
    </statBases>
	    <tradeability>Never</tradeability>
   <weaponTags>
      <li>zesq</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_zuieshouqiang</projectileDef>
        <warmupTicks>70</warmupTicks>
        <range>24</range>
        <soundCast>ShotPistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
 
 
