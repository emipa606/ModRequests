        <warmupTicks>500</warmupTicks>
        <range>150</range>
        <soundCast>ShotSniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>zezjq</li>
    </weaponTags>
  </ThingDef>
  
  
  
  
