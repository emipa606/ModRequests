<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>ebaxiezi</defName>
    <label>魔化蝎子</label>
    <description>罪恶帝国改造的生物，一般居住在阴暗的角落，最喜欢从背后攻击敌人，尾巴富含毒素
</description>
    <statBases>
      <MoveSpeed>4.3</MoveSpeed>
      <ComfyTemperatureMin>-100</ComfyTemperatureMin>
      <MarketValue>120</MarketValue>
	  	  	  <LeatherAmount>20</LeatherAmount>
	  <MeatAmount>50</MeatAmount>
	  	        <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTicks>80</defaultCooldownTicks>
        <meleeDamageBaseAmount>4</meleeDamageBaseAmount>
        <meleeDamageDef>ToxicBite</meleeDamageDef>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </verbs>
    <race>
	      <needsRest>false</needsRest>
      <hasGenders>false</hasGenders>
      <body>Snake</body>
      <predator>true</predator>
      <maxPreyBodySize>5</maxPreyBodySize>
      <baseBodySize>0.35</baseBodySize>
      <baseHungerRate>10</baseHungerRate>
      <baseHealthScale>2</baseHealthScale>
      <foodType>CarnivoreAnimal, OvivoreAnimal</foodType>
      <leatherLabel>魔化蝎子皮</leatherLabel>
      <leatherColor>(72,72,72)</leatherColor>
	        <meatLabel>魔化蝎子肉</meatLabel>
      <leatherInsulation>0.5</leatherInsulation>
      <wildness>1</wildness>
      <manhunterOnTameFailChance>1</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <gestationPeriodDays>999</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(3, 1)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>20</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.25</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.8</minAge>
          <soundWounded>Pawn_Cobra_Wounded</soundWounded>
          <soundDeath>Pawn_Cobra_Death</soundDeath>
          <soundCall>Pawn_Cobra_Call</soundCall>
          <soundAngry>Pawn_Cobra_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>StandardAnimal</li>
      <li>BadassAnimal</li>
    </tradeTags>
  </ThingDef>

