<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
  <ThingDef Name="zedgtou" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  
    	<ThingDef Name="zedgtouyi" ParentName="zedgtou" Abstract="True">
		<thingCategories>
			<li>Headgear</li>
		</thingCategories>
	</ThingDef>
  
  
  <ThingDef ParentName="zedgtouyi">
    <defName>zuietoushi</defName>
    <label>罪恶帽子（附带眼镜）</label>
    <description>罪恶帝国很流行的帽子，一般身份比较高的人都有带，这款附带超酷墨超，帽子上有帝国的徽标</description>
    <graphicData>
      <texPath>zedg/tubiao/yanjing</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>

    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <worngraphicPath>zedg/tou/toushi</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>1</commonality>
      <tags>
		<li>zedg</li>

      </tags>
      <defaultOutfitTags>
		<li>zedg</li>
      </defaultOutfitTags>
    </apparel>

    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
  
