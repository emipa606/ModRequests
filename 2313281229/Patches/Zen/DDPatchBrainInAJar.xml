<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- ================= Brain In A Jar TOTAL: 5 ================= -->
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Brain In A Jar</li>
			<li>[BLD] Brain In A Jar</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "BrainInAJar"]</xpath>
					<value><designatorDropdown>DDBrainsInJars</designatorDropdown></value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MiniBrainJar"]</xpath>
					<value><designatorDropdown>DDBrainsInJars</designatorDropdown></value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "DualBrain"]</xpath>
					<value><designatorDropdown>DDBrainsInJars</designatorDropdown></value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "QuadBrain"]</xpath>
					<value><designatorDropdown>DDBrainsInJars</designatorDropdown></value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MasterBrain"]</xpath>
					<value><designatorDropdown>DDBrainsInJars</designatorDropdown></value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>