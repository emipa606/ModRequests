<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- ================= Simple Storage Unpatchable TOTAL: 14 ================= -->
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[JDS] Simple Storage</li>
			<li>[BLD] Deep Simple Storage</li>
		</mods>
