<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--Base TacticalDoll-->
  <ThingDef Name="BaseTacticalDoll" ParentName="BaseMechanoid" Abstract="True">
    <statBases>
      <MarketValue>1200</MarketValue>
      <MoveSpeed>4.3</MoveSpeed>
      <BandwidthCost>2</BandwidthCost>
      <ControlTakingTime>18</ControlTakingTime>
      <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
    </statBases>
    <tools>
      <li>
        <label>left fist</label>
        <labelNoLocation>fist</labelNoLocation>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <labelNoLocation>fist</labelNoLocation>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>TacticalDoll</body>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <baseBodySize>1.0</baseBodySize>
      <renderTree>TacticalDoll</renderTree>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
          <soundCall>Pawn_Mech_Scyther_Call</soundCall>
        </li>
      </lifeStageAges>
      <detritusLeavings>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>18</texOverrideIndex>
          <spawnChance>0.1</spawnChance>
        </li>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>15</texOverrideIndex>
          <spawnChance>0.1</spawnChance>
        </li>
      </detritusLeavings>
      <mechEnabledWorkTypes>
        <li>BasicWorker</li>
        <li>Warden</li>
      </mechEnabledWorkTypes>
    </race>
    <butcherProducts>
      <Steel>20</Steel>
      <Plasteel>10</Plasteel>
    </butcherProducts>
    <comps>
      <li Class="MAP.TacticalDoll.CompStoryBodyType.CompProperties_DollBodyType" />
    </comps>
  </ThingDef>
  <PawnKindDef Name="BaseTacticalDollKind" ParentName="BaseMechanoidKind" Abstract="True">
    <race>MAP_Mech_TacticalDoll</race>
    <combatPower>200</combatPower>
    <allowInMechClusters>false</allowInMechClusters>
    <weaponMoney>1000~1200</weaponMoney>
    <weaponTags></weaponTags>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>500~1000</techHediffsMoney>
    <controlGroupPortraitZoom>1.2</controlGroupPortraitZoom>
    <destroyGearOnDrop>false</destroyGearOnDrop>
    <canStrip>true</canStrip>
  </PawnKindDef>
  <!--Assault Tactical Dolls-->
  <ThingDef ParentName="BaseTacticalDoll">
    <defName>MAP_Mech_AssaultTacticalDoll</defName>
    <label>AssaultTacticalDoll</label>
    <description>A tactical doll designed to work in tandem with humans, the Assault model is capable of travelling quickly through the line of fire and providing some suppressive firepower.</description>
    <race>
      <body>TacticalDoll</body>
      <baseHealthScale>1.32</baseHealthScale>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
      <detritusLeavings>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>18</texOverrideIndex>
          <spawnChance>0.1</spawnChance>
        </li>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>15</texOverrideIndex>
          <spawnChance>0.1</spawnChance>
        </li>
      </detritusLeavings>
    </race>
    <statBases>
      <BandwidthCost MayRequire="Ludeon.RimWorld.Biotech">2</BandwidthCost>
      <MoveSpeed>5.2</MoveSpeed>
      <ShootingAccuracyFactor_Short>1.5</ShootingAccuracyFactor_Short>
      <RangedWeapon_Cooldown>0.75</RangedWeapon_Cooldown>
    </statBases>
    <graphicData>
      <texPath>Things/Pawn/Mechanoid/TacticalDoll/Head/AssaultHead/AssaultHead</texPath>
      <maskPath>Things/Pawn/Mechanoid/TacticalDoll/Head/AssaultHead/AllegianceOverlays/AssaultHead</maskPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>1.0</drawSize>
    </graphicData>
  </ThingDef>
  <PawnKindDef ParentName="BaseTacticalDollKind">
    <defName>MAP_Mech_AssaultTacticalDoll</defName>
    <label>AssaultTacticalDoll</label>
    <race>MAP_Mech_AssaultTacticalDoll</race>
    <combatPower>200</combatPower>
    <weaponTags></weaponTags>
    <techHediffsChance>1</techHediffsChance>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/TacticalDoll/TacticalDoll</texPath>
          <maskPath>Things/Pawn/Mechanoid/TacticalDoll/AllegianceOverlays/TacticalDoll</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.7</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <abilities>
      <li>LongjumpMechLauncher</li>
    </abilities>
  </PawnKindDef>
  <!--Accurate Tactical Dolls-->
  <ThingDef ParentName="BaseTacticalDoll">
    <defName>MAP_Mech_AccurateTacticalDoll</defName>
    <label>AccurateTacticalDoll</label>
    <description>A tactical doll designed to work in tandem with humans, the Precision model has an enhanced targeting module that allows it to fight with great accuracy at all distances.</description>
    <race>
      <body>TacticalDoll</body>
      <baseHealthScale>1.32</baseHealthScale>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
      <detritusLeavings>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>18</texOverrideIndex>
          <spawnChance>0.1</spawnChance>
        </li>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>15</texOverrideIndex>
          <spawnChance>0.1</spawnChance>
        </li>
      </detritusLeavings>
    </race>
    <statBases>
      <BandwidthCost MayRequire="Ludeon.RimWorld.Biotech">2</BandwidthCost>
      <ShootingAccuracyFactor_Long>1.5</ShootingAccuracyFactor_Long>
      <ShootingAccuracyFactor_Medium>1.5</ShootingAccuracyFactor_Medium>
      <ShootingAccuracyFactor_Short>1.5</ShootingAccuracyFactor_Short>
      <ShootingAccuracyFactor_Touch>1.5</ShootingAccuracyFactor_Touch>
      <RangedWeapon_DamageMultiplier>1.5</RangedWeapon_DamageMultiplier>
    </statBases>
    <graphicData>
      <texPath>Things/Pawn/Mechanoid/TacticalDoll/Head/AccurateHead/AccurateHead</texPath>
      <maskPath>Things/Pawn/Mechanoid/TacticalDoll/Head/AccurateHead/AllegianceOverlays/AccurateHead</maskPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>1.0</drawSize>
    </graphicData>
  </ThingDef>
  <PawnKindDef ParentName="BaseTacticalDollKind">
    <defName>MAP_Mech_AccurateTacticalDoll</defName>
    <label>AccurateTacticalDoll</label>
    <race>MAP_Mech_AccurateTacticalDoll</race>
    <combatPower>200</combatPower>
    <weaponTags></weaponTags>
    <techHediffsChance>1</techHediffsChance>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/TacticalDoll/TacticalDoll</texPath>
          <maskPath>Things/Pawn/Mechanoid/TacticalDoll/AllegianceOverlays/TacticalDoll</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.7</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <abilities>
      <li>SmokepopAccurateDoll</li>
    </abilities>
  </PawnKindDef>
  <!--Raid Tactical Dolls-->
  <ThingDef ParentName="BaseTacticalDoll">
    <defName>MAP_Mech_RaidTacticalDoll</defName>
    <label>RaidTacticalDoll</label>
    <description>A tactical doll designed to work in tandem with humans, the Raider model has a reinforced protective structure and tactical shields to help it keep advancing on the front lines of battle.</description>
    <race>
      <body>TacticalDoll</body>
      <baseHealthScale>1.32</baseHealthScale>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
      <detritusLeavings>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>18</texOverrideIndex>
          <spawnChance>0.1</spawnChance>
        </li>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>15</texOverrideIndex>
          <spawnChance>0.1</spawnChance>
        </li>
      </detritusLeavings>
    </race>
    <statBases>
      <BandwidthCost MayRequire="Ludeon.RimWorld.Biotech">2</BandwidthCost>
      <EnergyShieldRechargeRate>0.7</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>3</EnergyShieldEnergyMax>
      <IncomingDamageFactor>0.6</IncomingDamageFactor>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
      <RangedCooldownFactor>0.6</RangedCooldownFactor>
      <MeleeDamageFactor>1.6</MeleeDamageFactor>
      <MeleeCooldownFactor>0.6</MeleeCooldownFactor>
      <MeleeWeapon_DamageMultiplier>1.6</MeleeWeapon_DamageMultiplier>
      <MeleeWeapon_CooldownMultiplier>0.6</MeleeWeapon_CooldownMultiplier>
    </statBases>
    <graphicData>
      <texPath>Things/Pawn/Mechanoid/TacticalDoll/Head/RaidHead/RaidHead</texPath>
      <maskPath>Things/Pawn/Mechanoid/TacticalDoll/Head/RaidHead/AllegianceOverlays/RaidHead</maskPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>1.0</drawSize>
    </graphicData>
    <comps>
      <li Class="CompProperties_ProjectileInterceptor">
        <radius>1.5</radius>
        <interceptGroundProjectiles>true</interceptGroundProjectiles>
        <color>(0.4, 0.6, 0.4)</color>
        <reactivateEffect>BulletShieldGenerator_Reactivate</reactivateEffect>
        <activeSound>BulletShield_Ambience</activeSound>
        <hitPoints>100</hitPoints>
        <hitPointsRestoreInstantlyAfterCharge>true</hitPointsRestoreInstantlyAfterCharge>
        <chargeDurationTicks>600</chargeDurationTicks>
        <!-- 30s -->
        <rechargeHitPointsIntervalTicks>120</rechargeHitPointsIntervalTicks>
        <minIdleAlpha>0.2</minIdleAlpha>
        <drawWithNoSelection>True</drawWithNoSelection>
        <disarmedByEmpForTicks>1500</disarmedByEmpForTicks>
        <gizmoTipKey>ProjectileInterceptorTip</gizmoTipKey>
      </li>
    </comps>
  </ThingDef>
  <PawnKindDef ParentName="BaseTacticalDollKind">
    <defName>MAP_Mech_RaidTacticalDoll</defName>
    <label>RaidTacticalDoll</label>
    <race>MAP_Mech_RaidTacticalDoll</race>
    <combatPower>200</combatPower>
    <weaponTags></weaponTags>
    <techHediffsChance>1</techHediffsChance>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/TacticalDoll/TacticalDoll</texPath>
          <maskPath>Things/Pawn/Mechanoid/TacticalDoll/AllegianceOverlays/TacticalDoll</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.7</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>