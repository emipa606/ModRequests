<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--Raid command-->
  <HediffDef MayRequire="ludeon.rimworld.biotech">
    <defName>RaidCommand</defName>
    <hediffClass>Hediff_Level</hediffClass>
    <descriptionHyperlinks>
      <ThingDef>MAP_Mech_Commander</ThingDef>
    </descriptionHyperlinks>
    <label>Raid Command</label>
    <description>A command create by Mech_Commander, Up this mechanoid's speed and damage</description>
    <descriptionShort>A command create by Mech_Commander, Up this mechanoid's speed and damage</descriptionShort>
    <defaultLabelColor>(1.0, 0.6, 0.6)</defaultLabelColor>
    <isBad>false</isBad>
    <priceImpact>false</priceImpact>
    <initialSeverity>1</initialSeverity>
    <minSeverity>0</minSeverity>
    <maxSeverity>1</maxSeverity>
    <keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
    <levelIsQuantity>true</levelIsQuantity>
    <stages>
      <li>
        <statFactors>
          <MoveSpeed>1.5</MoveSpeed>
        </statFactors>
        <statOffsets>
          <MeleeDamageFactor>0.25</MeleeDamageFactor>
          <RangedCooldownFactor>-0.30</RangedCooldownFactor>
        </statOffsets>
      </li>
    </stages>
    <duplicationAllowed>false</duplicationAllowed>
  </HediffDef>
  <!--Defensive command-->
  <HediffDef MayRequire="ludeon.rimworld.biotech">
    <defName>DefensiveCommand</defName>
    <hediffClass>Hediff_Level</hediffClass>
    <descriptionHyperlinks>
      <ThingDef>MAP_Mech_Commander</ThingDef>
    </descriptionHyperlinks>
    <label>Defensive Command</label>
    <description>A command create by Mech_Commander, reduce the damage incoming</description>
    <descriptionShort>A command create by Mech_Commander, reduce the damage incoming</descriptionShort>
    <defaultLabelColor>(0.5, 1.0, 0.6)</defaultLabelColor>
    <isBad>false</isBad>
    <priceImpact>false</priceImpact>
    <initialSeverity>1</initialSeverity>
    <minSeverity>0</minSeverity>
    <maxSeverity>1</maxSeverity>
    <keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
    <levelIsQuantity>true</levelIsQuantity>
    <stages>
      <li>
        <statFactors>
          <IncomingDamageFactor>0.75</IncomingDamageFactor>
        </statFactors>
      </li>
    </stages>
    <duplicationAllowed>false</duplicationAllowed>
  </HediffDef>
</Defs>