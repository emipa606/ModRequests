<?xml version="1.0" encoding="utf-8" ?>

<!-- Disallow hot chocolate from being usable in BiofuelRefinery -->
<!-- I don't think it would make sense to be usable here since HotChocolate is refined/not raw -->
<Patch>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/RecipeDef[defName="Make_ChemfuelFromOrganics"]/fixedIngredientFilter/disallowedThingDefs</xpath>
		<value>
			<li>HotChocolate</li>
		</value>
	</Operation>
</Patch>