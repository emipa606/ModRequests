<?xml version="1.0" encoding="utf-8" ?>

<!-- Patch in hot chocolate to list of acceptable foods for each title -->
<!-- Freeholder and Yeoman don't have food requirements -->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RoyalTitleDef[defName="Acolyte"]/foodRequirement/allowedDefs</xpath>
					<value>
						<li>HotChocolate</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RoyalTitleDef[defName="Knight"]/foodRequirement/allowedDefs</xpath>
					<value>
						<li>HotChocolate</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RoyalTitleDef[defName="Praetor"]/foodRequirement/allowedDefs</xpath>
					<value>
						<li>HotChocolate</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RoyalTitleDef[defName="Baron"]/foodRequirement/allowedDefs</xpath>
					<value>
						<li>HotChocolate</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RoyalTitleDef[defName="Count"]/foodRequirement/allowedDefs</xpath>
					<value>
						<li>HotChocolate</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RoyalTitleDef[@Name="BaseEmpireTitleNPC"]/foodRequirement/allowedDefs</xpath>
					<value>
						<li>HotChocolate</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	
</Patch>