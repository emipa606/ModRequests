<?xml version="1.0" encoding="utf-8" ?>

<!-- Disallow hot chocolate in default nutrition settings for growth vat -->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biotech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations> 
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="GrowthVat"]/building/defaultStorageSettings/filter/disallowedThingDefs</xpath>
					<value>
						<li>HotChocolate</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>