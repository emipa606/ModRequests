<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- Optic Shock -->
	<!-- See Also: BodyParts/Hediffs_BodyParts_OpticAugment.xml -->
	<HediffDef>
		<defName>Turn_OpticShock</defName>
		<label>optic shock</label>
		<labelNoun>an optic shock</labelNoun>
		<description>After-effects of an electrical shock to the brain's optic center. This is generally cause by feedback from vision-related augments hit by EMP pulses.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>1000~2500</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.3</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
</Defs>