    <description>Fellowship philosophy</description>
    <iconPath>UI/Memes/Triad</iconPath>
    <allowDuringTutorial>true</allowDuringTutorial>
	<worshipRoomLabel>Fellowship Hall</worshipRoomLabel>
    <!-- <groupDef>Individualism</groupDef> -->
	<groupDef>Misc</groupDef>
    <impact>1</impact>

    <exclusionTags>
      <li>Individualism</li>
      <li>SupremacistIndividualist</li>
    </exclusionTags>
    <requireOne>
      <li>
        <li>Charity_Worthwhile</li>
      </li>
      <li>
        <li>Execution_RespectedIfGuilty</li>
      </li>
      <li>
