<!--============= Children ==============-->
<AlienRace.BackstoryDef ParentName="Ultima_BackstoryBuccsDenChild">
    <defName>Ultima_BackstoryPirateChild</defName>
    <title>pirates child</title>
    <baseDescription>[PAWN_nameDef] was born and raised in Buccaneer's Den.  The child of pirates, [PAWN_nameDef] can't be entirely sure who their parents are. One thing is for certain, they learned early to fend for themselves.</baseDescription>
    <forcedTraits>
        <li>
          <defName>Abrasive</defName>
		  <chance>30</chance>
        </li>
        <li>
          <defName>NightOwl</defName>
		  <chance>30</chance>
        </li>
        <li>
          <defName>Tough</defName>
		  <chance>30</chance>
        </li>
    </forcedTraits>
    <skillGains>
      <li>
        <defName>Social</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Melee</defName>
        <amount>4</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef ParentName="Ultima_BackstoryBuccsDenChild">
    <defName>Ultima_BackstoryUrchinChild</defName>
