        <defName>Social</defName>
        <amount>4</amount>
      </li>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef ParentName="Ultima_BackstoryBuccsDenChild">
    <defName>Ultima_BackstoryPirateLegacy</defName>
