  <!-- ****************************** Gargoyle Garb ****************************** --> 
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Ultima_GargoyleGarb</defName>
		<label>gargoyle kilt</label>
		<description>A simple fur kilt.</description>
		<graphicData>
			<texPath>Things/Apparel/Gargoyle/Ultima_GargoyleGarb</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<tradeability>Sellable</tradeability>
        <generateCommonality>1</generateCommonality>
		<costStuffCount>90</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>6000</WorkToMake>
			<Mass>2.5</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>1</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
			<useWornGraphicMask>true</useWornGraphicMask>
			<wornGraphicPath>Things/Apparel/Gargoyle/Ultima_GargoyleGarb</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Ultima_Gargoyle</li>
			</tags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>ResearchUltimaApparel</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_TailorsBench</li>
			</recipeUsers>
		</recipeMaker>
		<!-- <colorGenerator Class="ColorGenerator_StandardApparel" /> -->
	</ThingDef>

