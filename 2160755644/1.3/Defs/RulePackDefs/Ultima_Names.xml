<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RulePackDef>
    <defName>Ultima_HobbitNamer</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[firstName] [familyName]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>firstName</keyword>
          <path>Names/Names_HobbitsMale</path>
        </li>        
		<li Class="Rule_File">
          <keyword>familyName</keyword>
          <path>Names/Names_HobbitsLastNames</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>
  
