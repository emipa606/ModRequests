  <RulePackDef>
    <defName>Ultima_GoblinNamer</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[start][middle][end]</li>

        <!-- Start never ends with a vowel -->
        <li>start->Bor</li>
        <li>start->Free</li>
        <li>start->Gur</li>
        <li>start->Ja</li>
        <li>start->Ket</li>
        <li>start->La</li>
        <li>start->Mil</li>
        <li>start->Pom</li>
        <li>start->Ret</li>
        <li>start->Rog</li>
        <li>start->Ver</li>

        <!-- Middle is always surrounded by vowels -->
        <li>middle->ne</li>
        <li>middle->mis</li>
        <li>middle->a</li>
        <li>middle->car</li>
        <li>middle->nar</li>
        <li>middle->cha</li>
        <li>middle->nu</li>
        <li>middle->en</li>
        <li>middle->dir</li>
        <li>middle->i</li>
        <li>middle->wump</li>
        <li>middle->nix</li>

        <!-- Ends never begin with vowels -->
        <li>end(p=4)-></li>
        <li>end->dir</li>
        <li>end->val</li>
        <li>end->go</li>
        <li>end->us</li>
        <li>end->gun</li>
        <li>end->chall</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

