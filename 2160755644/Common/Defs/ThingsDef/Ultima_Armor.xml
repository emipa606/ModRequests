<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ##### Medieval ##### -->
    <!-- +++++ Light Plate Armor +++++ -->
	<ThingDef ParentName="ApparelBase">
		<defName>Ultima_GuardArmor</defName>
		<label>guard armor</label>
		<description>Overlapping solid plates of armor covering the chest and shoulders.</description>
		<graphicData>
			<texPath>Things/Apparel/GuardArmor/GuardArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>1</generateCommonality>
		<costStuffCount>130</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>230</MaxHitPoints>
			<WorkToMake>18000</WorkToMake>
			<Mass>12</Mass>
			<StuffEffectMultiplierArmor>0.73</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.14</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.12</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
			<wornGraphicPath>Things/Apparel/GuardArmor/GuardArmor</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<!--
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
				-->
				<li>Ultima_GuardArmor</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<!-- <colorGenerator Class="ColorGenerator_StandardApparel" /> -->
	</ThingDef>

