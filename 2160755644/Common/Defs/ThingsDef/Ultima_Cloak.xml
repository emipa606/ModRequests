  <ApparelLayerDef>
    <defName>Cloak</defName>
    <label>cloak</label>
    <drawOrder>350</drawOrder>
  </ApparelLayerDef>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Ultima_Apparel_Cloak</defName>
    <label>cloak</label>
    <description>A fashionable cloak.</description>
    <graphicData>
      <texPath>Things/Apparel/HoodedCloak/ennacrimaCloakDisplay</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>4000</WorkToMake>
      <Mass>0.8</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.01</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
	    <!--
        <li>Torso</li>
		-->
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/HoodedCloak/ennacrimaCloak</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>UltimaBasic</li>
        <li>Ultima_Cloak</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.31,0.40,0.3,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.31,0.16,0.1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>
