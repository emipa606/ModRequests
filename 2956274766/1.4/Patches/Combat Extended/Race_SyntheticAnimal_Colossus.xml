<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- ========== Colossus ========== -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace" MayRequire="ceteam.combatextended">
          <xpath>Defs/ThingDef[defName="SyntheticAnimal_Colossus"]/statBases/ArmorRating_Blunt</xpath>
          <value>
            <ArmorRating_Blunt>270</ArmorRating_Blunt>
          </value>
          
        </li>
        <li Class="PatchOperationReplace" MayRequire="ceteam.combatextended">
          <xpath>Defs/ThingDef[defName="SyntheticAnimal_Colossus"]/statBases/ArmorRating_Sharp</xpath>
          <value>
            <ArmorRating_Sharp>100</ArmorRating_Sharp>
          </value>
          
        </li>
        <li Class="PatchOperationAddModExtension" MayRequire="ceteam.combatextended">
          <xpath>Defs/ThingDef[defName="SyntheticAnimal_Colossus"]</xpath>
          <value>
            <li Class="CombatExtended.RacePropertiesExtensionCE">
              <bodyShape>Humanoid</bodyShape>
            </li>
          </value>
          
        </li>
        <li Class="PatchOperationAdd" MayRequire="ceteam.combatextended">
          <xpath>Defs/ThingDef[defName="SyntheticAnimal_Colossus"]/statBases</xpath>
          <value>
            <CarryWeight>1000</CarryWeight>
            <CarryBulk>500</CarryBulk>
            <ShootingAccuracyPawn>1</ShootingAccuracyPawn>
            <MeleeDodgeChance>0.02</MeleeDodgeChance>
            <MeleeCritChance>0.20</MeleeCritChance>
            <MeleeParryChance>0.57</MeleeParryChance>
            <MaxHitPoints>550</MaxHitPoints>
          </value>
          
        </li>
        <li Class="PatchOperationReplace" MayRequire="ceteam.combatextended">
          <xpath>Defs/ThingDef[defName="SyntheticAnimal_Colossus"]/tools</xpath>
          <value>
            <tools>
              <li Class="CombatExtended.ToolCE">
                <label>head</label>
                <capacities>
                  <li>Demolish</li>
                </capacities>
                <power>27</power>
                <cooldownTime>3.0</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <armorPenetrationBlunt>10</armorPenetrationBlunt>
                <chanceFactor>0.2</chanceFactor>
              </li>
            </tools>
          </value>
          
        </li>
      </operations>
    </match>
  </Operation>
</Patch>