<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--Colossus-->
  <ThingDef ParentName="AnimalThingBase">
    <defName>SyntheticAnimal_Colossus</defName>
    <label>colossus</label>
    <description>This is a pack animal, and its art resources are being produced, so now it looks like a tortoise.</description>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <statBases>
      <MoveSpeed>15</MoveSpeed>
      <ComfyTemperatureMin>-250</ComfyTemperatureMin>
      <ComfyTemperatureMax>1000</ComfyTemperatureMax>
      <MeatAmount>0</MeatAmount>
      <LeatherAmount>0</LeatherAmount>
      <ToxicResistance>1</ToxicResistance>
      <PsychicSensitivity>0</PsychicSensitivity>
      <Flammability>0</Flammability>
      <ArmorRating_Sharp>1.8</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.2</ArmorRating_Blunt>
      <ArmorRating_Heat>2</ArmorRating_Heat>
      <MarketValue>2000</MarketValue>
      <Mass>3000</Mass>
      <MeleeArmorPenetration>1</MeleeArmorPenetration>
      <FilthRate>0</FilthRate>
      <CarryingCapacity>500</CarryingCapacity>
      <ImmunityGainSpeed>3</ImmunityGainSpeed>
      <IncomingDamageFactor>0.05</IncomingDamageFactor>
      <CaravanRidingSpeedFactor>3</CaravanRidingSpeedFactor>
      <InjuryHealingFactor>16</InjuryHealingFactor>
      <PainShockThreshold>1</PainShockThreshold>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1</ToxicEnvironmentResistance>
    </statBases>
    <ingredient>
      <mergeCompatibilityTags>
        <li MayRequire="Ludeon.RimWorld.Ideology">InsectMeat</li>
      </mergeCompatibilityTags>
    </ingredient>
    <race>
      <fleshType>Insectoid</fleshType>
      <herdAnimal>true</herdAnimal>
      <body>SyntheticAnimal_Colossus</body>
      <bloodDef>Filth_MachineBits</bloodDef>
      <baseHungerRate>0.0</baseHungerRate>
      <baseBodySize>5</baseBodySize>
      <baseHealthScale>30</baseHealthScale>
      <needsRest>false</needsRest>
      <hasGenders>false</hasGenders>
      <foodType>DendrovoreAnimal</foodType>
      <wildness>0</wildness>
      <trainability>Advanced</trainability>
      <lifeExpectancy>60</lifeExpectancy>
      <packAnimal>true</packAnimal>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
      <lifeStageAges>
        <li>
          <def>AnimalAdult</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
          <soundCall>Pawn_Mech_Centipede_Call</soundCall>
        </li>
      </lifeStageAges>
      <useMeatFrom>Megaspider</useMeatFrom>
    </race>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Demolish</li>
        </capacities>
        <power>3</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
  </ThingDef>
  <PawnKindDef ParentName="AnimalKindBase">
    <defName>SyntheticAnimal_Colossus</defName>
    <label>colossus</label>
    <race>SyntheticAnimal_Colossus</race>
    <combatPower>250</combatPower>
    <ecoSystemWeight>0</ecoSystemWeight>
    <wildGroupSize>0~0</wildGroupSize>
    <canArriveManhunter>false</canArriveManhunter>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Animal/SyntheticAnimal_Colossus/SyntheticAnimal_Colossus</texPath>
          <drawSize>4</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>