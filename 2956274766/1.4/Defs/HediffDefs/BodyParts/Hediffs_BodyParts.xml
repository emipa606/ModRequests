<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Was not craftable in vanilla, made craftable by research in Royalty -->
  <HediffDef ParentName="ImplantHediffBase">
    <defName>PsychicSuppressorChip</defName>
    <label>psychic suppressor chip</label>
    <labelNoun>a psychic suppressor chip</labelNoun>
    <description>An installed psychic suppressor chip implant.</description>
    <descriptionHyperlinks>
      <ThingDef>PsychicSuppressorChip</ThingDef>
    </descriptionHyperlinks>
    <stages>
      <li>
        <statFactors>
          <PsychicSensitivity>0</PsychicSensitivity>
        </statFactors>
      </li>
    </stages>
    <spawnThingOnRemoved>PsychicSuppressorChip</spawnThingOnRemoved>
  </HediffDef>
  <ThingDef ParentName="BodyPartProstheticBase">
    <defName>PsychicSuppressorChip</defName>
    <label>psychic suppressor chip</label>
    <description>A brain implant which inhibits psychic sensitivity.</description>
    <descriptionHyperlinks>
      <RecipeDef>InstallPsychicSuppressorChip</RecipeDef>
    </descriptionHyperlinks>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <costList>
      <Steel>20</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <techHediffsTags>
      <li>GTGBodyPart</li>
    </techHediffsTags>
  </ThingDef>
  <RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>InstallPsychicSuppressorChip</defName>
    <label>install psychic suppressor chip</label>
    <description>Install a psychic suppressor chip.</description>
    <descriptionHyperlinks>
      <ThingDef>PsychicSuppressorChip</ThingDef>
      <HediffDef>PsychicSuppressorChip</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing psychic suppressor chip.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PsychicSuppressorChip</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>PsychicSuppressorChip</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>PsychicSuppressorChip</addsHediff>
  </RecipeDef>
  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>RemovePsychicSuppressorChip</defName>
    <label>remove psychic suppressor chip</label>
    <description>Remove the psychic suppressor chip.</description>
    <descriptionHyperlinks>
      <ThingDef>PsychicSuppressorChip</ThingDef>
      <HediffDef>PsychicSuppressorChip</HediffDef>
    </descriptionHyperlinks>
    <jobString>Removing psychic suppressor chip.</jobString>
    <removesHediff>PsychicSuppressorChip</removesHediff>
  </RecipeDef>
  <!-- Was not craftable in vanilla, made craftable by research in Royalty -->
