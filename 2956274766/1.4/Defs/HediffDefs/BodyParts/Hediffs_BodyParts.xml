    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ThermostatGland</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>ThermostatGland</addsHediff>
  </RecipeDef>
  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>RemoveThermostatGland</defName>
    <label>remove thermostat gland</label>
    <description>Remove thermostat gland.</description>
    <descriptionHyperlinks>
      <ThingDef>ThermostatGland</ThingDef>
