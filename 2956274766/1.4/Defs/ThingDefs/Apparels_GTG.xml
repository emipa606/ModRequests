<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_GTGHighPowerShieldBelt</defName>
    <label>high power shield belt</label>
    <description>A projectile-repulsion device. It will attempt to stop incoming projectiles or shrapnel, but does nothing against melee attacks or heat. It doesn't prevent the wearer from firing out, and shuts down instantly if hit by EMP.</description>
    <thingClass>Apparel</thingClass>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/ShieldBelt/ShieldBelt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <techLevel>Spacer</techLevel>
    <statBases>
      <Mass>3</Mass>
      <WorkToMake>30000</WorkToMake>
      <Flammability>0.4</Flammability>
      <EnergyShieldRechargeRate>0.03</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>2.5</EnergyShieldEnergyMax>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Steel>150</Steel>
      <Plasteel>100</Plasteel>
    </costList>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
      <researchPrerequisite>ShieldBelt</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
      <useIngredientsForColor>false</useIngredientsForColor>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>300</displayPriority>
    </recipeMaker>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>GTGShieldBelt</li>
      </tags>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="CompProperties_Shield">
        <blocksRangedWeapons>false</blocksRangedWeapons>
      </li>
    </comps>
    <allowedArchonexusCount>1</allowedArchonexusCount>
    <tradeTags>
      <li>Armor</li>
    </tradeTags>
  </ThingDef>
</Defs>