<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!-- ====================================== Smock =========================================== -->
  <ThingDef Name="RNHandwearBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
		<techLevel>Industrial</techLevel>
		
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.8,0.8)</drawSize>	  
    </graphicData>	
	
    <drawGUIOverlay>true</drawGUIOverlay>
		
	<statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
      <Insulation_Cold>3</Insulation_Cold>
		<EquipDelay>0.5</EquipDelay>	  
		<Beauty>-3</Beauty>
		<Mass>0.2</Mass>		
    </statBases>
		
	<apparel>
	  <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups><li>Hands</li></bodyPartGroups>
      <!--<layers><li>Middle</li></layers>-->	
      <defaultOutfitTags>
		<li>Worker</li>
		<li>Soldier</li>
		</defaultOutfitTags>	
    </apparel>	
		
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  
  <!--====================================-->
  
   <!-- (Colorable) Handgear Base Class -->
  <ThingDef Name="RNHandwear_Colorable" ParentName="RNHandwearBase" Abstract="True">
    <stuffCategories>
      <li>Leathery</li>
      <li>Fabric</li>	  
    </stuffCategories>
  <comps>
      <li><compClass>CompColorable</compClass></li>
    </comps>	
    <colorGenerator Class="ColorGenerator_StandardApparel" />	
    <thingCategories>
      <li>RNApparel_Handwear</li>
    </thingCategories>
	<recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>  
  
     <!-- (Colorable) Handgear Base Class -->
  <ThingDef Name="RNHandwear_ArmorColorable" ParentName="RNHandwearBase" Abstract="True">
    <stuffCategories>
      <li>Leathery</li>
      <li>Fabric</li>	
    </stuffCategories>
  <comps>
      <li><compClass>CompColorable</compClass></li>
    </comps>	
    <colorGenerator Class="ColorGenerator_StandardApparel" />	
    <thingCategories>
      <li>RNApparel_Handwear</li>
    </thingCategories>
  </ThingDef>  
  
  
