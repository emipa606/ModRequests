<?xml version="1.0" encoding="utf-8"?>
<Patch>
<Operation Class="PatchOperationFindMod">
    <mods><li>[RH] Faction: Task Force 141 (1.0)</li></mods>
    <match Class="PatchOperationAddModExtension">
        <xpath>Defs/FactionDef[defName="RH_141TaskForce"]</xpath>
        <value>
            <li Class="OFOFriendly.ModExtension">
                <letter>NeutralEvent</letter>
                <delayDaysMin>1</delayDaysMin>
                <delayDaysMax>7</delayDaysMax>
                <repOffset>65</repOffset>
                <labelKey>RH_OFOFriendlyText_Label</labelKey>
                <textKey>RH_OFOFriendly_Text</textKey>
            </li>
        </value>
     </match>
	</Operation>
	
