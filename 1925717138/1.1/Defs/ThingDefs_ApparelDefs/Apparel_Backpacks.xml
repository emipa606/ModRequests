      <wornGraphicPath>Things/Apparel/Belt/MessengerBag_Tactical</wornGraphicPath>
<wornGraphicData>
  <renderUtilityAsPack>false</renderUtilityAsPack>
</wornGraphicData>
      <layers>
        <li>Belt</li>
