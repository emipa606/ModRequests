<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>VCERC2_BrownSugarRush</defName>
		<label>consumed brown sugar (from meal)</label>
		<makesSickThought>false</makesSickThought>
		<description>Brown sugar is easily converted into energy by the body, which may result in a nice burst of energy. It increases moving stat by 15% for 24 hours.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>VCERC2_ConsumedBrownSugar</li>
				</thoughtDefs>
				<removeThoughtDefs>		
					<li>VCE_ConsumedSugar</li>
				</removeThoughtDefs>
			</li>
		</comps>
		<stages>
			<li>   
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.15</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>