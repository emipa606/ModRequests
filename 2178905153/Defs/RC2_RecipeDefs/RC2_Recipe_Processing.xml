<Defs>

	<RecipeDef ParentName="RC2_MillingBase">
		<defName>VCERC2_ProcessSugarBeets2</defName>
		<label>make brown sugar from sugar beets</label>
		<description>Process sugar beets into a delicious, tooth-destroying brown powder.  Less efficient than sugarcane.</description>
		<jobString>Processing sugar beets.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RC2_RawSugarBeets</li>
					</thingDefs>
				</filter>
				<count>35</count>
			</li>
		</ingredients>
		<products>
			<VCERC2_BrownSugar>1</VCERC2_BrownSugar>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RC2_RawSugarBeets</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>RC2_RawSugarBeets</li>
			</thingDefs>
		</defaultIngredientFilter>
		<recipeUsers>
		<li>RC2_FoodPrepSpot</li>
		</recipeUsers>
	</RecipeDef>

