<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="VFEI2_BaseInsect">
		<defName>VFEI2_Macrofly_Swarm</defName>
		<label>macroflyswarm</label>
		<description>A group of smaller bioengineered flying insectoid the size of a dog. They will rush up and bite their prey, blocking their view and allowing their larger companions to deliver a fatal blow.</description>
		<statBases>
			<MoveSpeed>3.75</MoveSpeed>
			<Flammability>0.7</Flammability>
			<ComfyTemperatureMin>-40</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
			<MarketValue>800</MarketValue>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.15</ArmorRating_Sharp>
			<MeleeHitChance>100</MeleeHitChance>
			<MeleeDodgeChance>100</MeleeDodgeChance>
			<LeatherAmount>30</LeatherAmount>
		</statBases>
		<tools>
			<li>
				<label>mouth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>3</power>
				<armorPenetration>0.25</armorPenetration>
				<cooldownTime>1</cooldownTime>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
			</li>
		</tools>
		<comps>
			<li Class="AnimalBehaviours.CompProperties_InitialHediff">
				<hediffname>VFEI2_Swarm_Attack</hediffname>
				<hediffseverity>1</hediffseverity>
			</li>
			<li Class="AnimalBehaviours.CompProperties_InitialHediff">
				<hediffname>VFEI2_Cooperative_Hunting</hediffname>
				<hediffseverity>1</hediffseverity>
			</li>
			<li Class="AnimalBehaviours.CompProperties_InitialAbility">
				<initialAbility>VFEI2_InsectGlide_Far</initialAbility>
			</li>
		</comps>
		<race>
			
			<body>VFEI2_Swarmling</body>
			<baseHungerRate>0.4</baseHungerRate>
			<baseBodySize>3.00</baseBodySize>
			<baseHealthScale>3.0</baseHealthScale>
		
			<useMeatFrom>Megaspider</useMeatFrom>
			<wildness>0.95</wildness>
			<lifeExpectancy>6</lifeExpectancy>
			<trainability>Advanced</trainability>
			<leatherDef>VFEI2_Chitin</leatherDef>
			<lifeStageAges>
				<li>
					<def>EusocialInsectLarva</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>EusocialInsectJuvenile</def>
					<minAge>0.015</minAge>
				</li>
				<li>
					<def>EusocialInsectAdult</def>
					<minAge>0.1</minAge>
					<soundWounded>Pawn_Megascarab_Wounded</soundWounded>
					<soundDeath>Pawn_Megascarab_Death</soundDeath>
					<soundCall>Pawn_Megascarab_Call</soundCall>
					<soundAngry>Pawn_Megascarab_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
	</ThingDef>
	<PawnKindDef ParentName="AnimalKindBase">
		<defName>VFEI2_Macrofly_Swarm</defName>
		<label>macroflyswarm</label>
		<race>VFEI2_Macrofly_Swarm</race>

		<combatPower>250</combatPower>
		<canArriveManhunter>false</canArriveManhunter>
		<ecoSystemWeight>0.50</ecoSystemWeight>
		<defaultFactionType>Insect</defaultFactionType>
		<aiAvoidCover>false</aiAvoidCover>
		<defendPointRadius>0</defendPointRadius>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Animal/Macroflyswarm/Macroflyswarm</texPath>
					<color>(150,133,122)</color>
					<shaderType>CutoutComplex</shaderType>
					<drawSize>3.6</drawSize>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Macroflyswarm/Dessicated_Macroflyswarm</texPath>
					<drawSize>3.6</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Animal/Macroflyswarm/Macroflyswarm</texPath>
					<drawSize>4.0</drawSize>
					<shaderType>CutoutComplex</shaderType>
					<color>(150,133,122)</color>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Macroflyswarm/Dessicated_Macroflyswarm</texPath>
					<drawSize>4.0</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Animal/Macroflyswarm/Macroflyswarm</texPath>
					<drawSize>5</drawSize>
					<shaderType>CutoutComplex</shaderType>
						<color>(150,133,122)</color>
					<shadowData>
						<volume>(0.5, 0.7, 0.43)</volume>
						<offset>(0,0,-0.1)</offset>
					</shadowData>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Macroflyswarm/Dessicated_Macroflyswarm</texPath>
					<drawSize>5</drawSize>
				</dessicatedBodyGraphicData>
			</li>
		</lifeStages>
	</PawnKindDef>
</Defs>