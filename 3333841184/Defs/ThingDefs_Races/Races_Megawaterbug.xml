<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--  Megathrips -->
	<ThingDef ParentName="VFEI2_BaseInsect">
		<defName>VFEI2_Megawaterbug</defName>
		<label>megawaterbug</label>
		<description>Megawaterbug having the same powerful combat intuition and flight ability as the Chelis insectoid, and the ability to inject highly corrosive digestive fluids into enemy bodies with sharp mouthparts, they are the top predators on Kemian planet.</description>
		<statBases>
			<MoveSpeed>4.00</MoveSpeed>
			<Flammability>0.7</Flammability>
			<ComfyTemperatureMin>0</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
			<MarketValue>750</MarketValue>
			<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.65</ArmorRating_Sharp>
			<MeleeHitChance>100</MeleeHitChance>
			<MeleeDodgeChance>100</MeleeDodgeChance>
			<LeatherAmount>30</LeatherAmount>
		</statBases>
		<tools>
			<li>
				<label>mouth</label>
				<capacities>
					<li>VFEI2_Strong_AcidBite</li>
				</capacities>
				<armorPenetration>1</armorPenetration>
				<power>10</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
			</li>
			<li>
				<label>right claw</label>
				<capacities>
					<li>VFEI2_TeramantisStun</li>
				</capacities>
				<armorPenetration>0.25</armorPenetration>
				<power>5</power>
				<cooldownTime>1</cooldownTime>
				<linkedBodyPartsGroup>VFEI2_ClawAttackTool</linkedBodyPartsGroup>
			</li>
			<li>
				<label>left claw</label>
				<capacities>
					<li>VFEI2_TeramantisStun</li>
				</capacities>
				<armorPenetration>0.25</armorPenetration>
				<power>5</power>
				<cooldownTime>1</cooldownTime>
				<linkedBodyPartsGroup>VFEI2_ClawAttackTool</linkedBodyPartsGroup>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<armorPenetration>0.25</armorPenetration>
				<cooldownTime>1</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		
		<race>
			
			<body>VFEI2_ClawedInsectoid</body>
			<baseHungerRate>0.4</baseHungerRate>
			<baseBodySize>1.5</baseBodySize>
			<baseHealthScale>3</baseHealthScale>
		
			<useMeatFrom>Megaspider</useMeatFrom>
			<wildness>0.95</wildness>
			<lifeExpectancy>6</lifeExpectancy>
			<trainability>Advanced</trainability>
			<leatherDef>VFEI2_Chitin</leatherDef>
			<lifeStageAges>
				<li>
					<def>EusocialInsectLarva</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>EusocialInsectJuvenile</def>
					<minAge>0.03</minAge>
				</li>
				<li>
					<def>EusocialInsectAdult</def>
					<minAge>0.2</minAge>
					<soundWounded>Pawn_Megascarab_Wounded</soundWounded>
					<soundDeath>Pawn_Megascarab_Death</soundDeath>
					<soundCall>Pawn_Megascarab_Call</soundCall>
					<soundAngry>Pawn_Megascarab_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
		<comps>
			<li Class="AnimalBehaviours.CompProperties_InitialHediff">
				<hediffname>VFEI2_AcidImmunity</hediffname>
				<hediffseverity>1</hediffseverity>

			</li>
			<li Class="AnimalBehaviours.CompProperties_InitialAbility">
				<initialAbility>VFEI2_InsectGlide_Medium</initialAbility>
			</li>
		</comps>
	</ThingDef>
