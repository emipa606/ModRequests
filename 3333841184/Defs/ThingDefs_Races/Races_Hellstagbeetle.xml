<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--  Hellbeetle -->
	<ThingDef ParentName="VFEI2_BaseInsect">
		<defName>VFEI2_Hellstagbeetle</defName>
		<label>hellstagbeetle</label>
		<description>A genetically-engineered giant insectoid the size of a elephant. Designed for for handling steel in high-temperature environments in the planet Nuchadus,hellstagbeetle has powerful strength and a thick shell,And they have a special sense for steel and can find scattered steel mines buried underground .</description>
		<statBases>
			<MoveSpeed>3.5</MoveSpeed>
			<Flammability>0</Flammability>
			<ComfyTemperatureMin>-20</ComfyTemperatureMin>
			<ComfyTemperatureMax>160</ComfyTemperatureMax>
			<MarketValue>1500</MarketValue>
			<ArmorRating_Blunt>0.8</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.8</ArmorRating_Sharp>
			<ArmorRating_Heat>2</ArmorRating_Heat>
			<LeatherAmount>30</LeatherAmount>
		</statBases>
		<tools>
			<li>
				<label>head claw</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>30</power>
				<armorPenetration>0.5</armorPenetration>
				<cooldownTime>3</cooldownTime>
				<linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>20</power>
				<armorPenetration>0.5</armorPenetration>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="AnimalBehaviours.CompProperties_InitialHediff">
				<hediffname>VFEI2_Blazing_Body</hediffname>
				<hediffseverity>1</hediffseverity>
			</li>
			<li Class="AnimalBehaviours.CompProperties_InitialHediff">
				<hediffname>VFEI2_Crushing</hediffname>
				<hediffseverity>1</hediffseverity>
			</li>
			<li Class="AnimalBehaviours.CompProperties_AnimalProduct">
				<resourceDef>Steel</resourceDef>
				<gatheringIntervalDays>1</gatheringIntervalDays>
				<resourceAmount>20</resourceAmount>
				<customResourceString>VFEI2_Steel</customResourceString>
				<hideDisplayOnWildAnimals>true</hideDisplayOnWildAnimals>
			</li>
		</comps>
		<race>
			<body>BeetleLikeWithClaw</body>
			<baseHungerRate>0.4</baseHungerRate>
			<baseBodySize>3</baseBodySize>
			<baseHealthScale>6</baseHealthScale>
		
			<useMeatFrom>Megaspider</useMeatFrom>
			<wildness>0.95</wildness>
			<lifeExpectancy>6</lifeExpectancy>
			<trainability>Advanced</trainability>
			<leatherDef>VFEI2_Chitin</leatherDef>
			<lifeStageAges>
				<li>
					<def>EusocialInsectLarva</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>EusocialInsectJuvenile</def>
					<minAge>0.03</minAge>
				</li>
				<li>
					<def>EusocialInsectAdult</def>
					<minAge>0.2</minAge>
					<soundWounded>Pawn_BigInsect_Pain</soundWounded>
					<soundDeath>Pawn_BigInsect_Death</soundDeath>
					<soundCall>Pawn_BigInsect_Call</soundCall>
					<soundAngry>Pawn_BigInsect_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
	</ThingDef>
	<PawnKindDef ParentName="AnimalKindBase">
		<defName>VFEI2_Hellstagbeetle</defName>
		<label>hellstagbeetle</label>
		<race>VFEI2_Hellstagbeetle</race>

		<combatPower>450</combatPower>
		<canArriveManhunter>false</canArriveManhunter>
		<ecoSystemWeight>0.50</ecoSystemWeight>
		<defaultFactionType>Insect</defaultFactionType>
		<aiAvoidCover>false</aiAvoidCover>
		<defendPointRadius>0</defendPointRadius>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Animal/Hellstagbeetle/Hellstagbeetle</texPath>
					<color>(128,107,104)</color>
					<shaderType>CutoutComplex</shaderType>
					<drawSize>2</drawSize>
				</bodyGraphicData>
