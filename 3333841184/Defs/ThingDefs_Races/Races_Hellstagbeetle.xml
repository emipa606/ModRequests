					<color>(128,107,104)</color>
					<shaderType>CutoutComplex</shaderType>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Hellstagbeetle/Dessicated_Hellstagbeetle</texPath>
					<drawSize>3.75</drawSize>
