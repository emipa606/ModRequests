<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--  Ironclad -->
	<ThingDef ParentName="VFEI2_BaseInsect">
		<defName>VFEI2_Nursepillworm</defName>
		<label>nursepillworm</label>
		<description>A giant, genetically-engineered insectoid responsible for the hive defense.Nursepillworm will evaporate body fluids with analgesic and healing effects into the air to support nearby companions, and also use its hard head to hit the ground, producing a large amount of gravel to interfere with enemies.Its extremely thick rock carapace makes it very slow but also very durable, but excessive damage will chip away the armor exposing the weak spots.</description>
		<statBases>
			<MoveSpeed>1.45</MoveSpeed>
			<Flammability>0</Flammability>
			<ComfyTemperatureMin>-40</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
			<MarketValue>1500</MarketValue>
			<ArmorRating_Blunt>1.45</ArmorRating_Blunt>
			<ArmorRating_Sharp>1.6</ArmorRating_Sharp>
			<ArmorRating_Heat>1</ArmorRating_Heat>
			<LeatherAmount>30</LeatherAmount>
			<MiningSpeed>4</MiningSpeed>
		</statBases>
		<tools>
			<li>
				<label>head claw</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
				<armorPenetration>0.15</armorPenetration>
				<linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>20</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<armorPenetration>0.15</armorPenetration>
				<power>0</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="AnimalBehaviours.CompProperties_InitialHediff">
				<hediffname>VFEI2_Healing_Incense</hediffname>
				<hediffseverity>1</hediffseverity>
			</li>
			<li Class="AnimalBehaviours.CompProperties_InitialHediff">
				<hediffname>VFEI2_Crushing</hediffname>
				<hediffseverity>1</hediffseverity>
			</li>
			<li Class="AnimalBehaviours.CompProperties_HediffAfterHealthLoss">
				<healthPercent>80</healthPercent>
				<tickInterval>60</tickInterval>
				<hediff>VFEI2_ArmorDegradation</hediff>
				<severity>0.9</severity>
			</li>
		</comps>
		<verbs>
				<li>
				<verbClass>Verb_Shoot</verbClass>
				<accuracyTouch>1</accuracyTouch>
				<accuracyShort>1</accuracyShort>
				<accuracyMedium>1</accuracyMedium>
				<accuracyLong>1</accuracyLong>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Nursepillworm</defaultProjectile>
				<warmupTime>3</warmupTime>
				<ticksBetweenBurstShots>1</ticksBetweenBurstShots>
				<burstShotCount>10</burstShotCount>
				<range>5</range>
				<soundCast>ThrowGrenade</soundCast>
				<muzzleFlashScale>0</muzzleFlashScale>
			</li>
			</verbs>
		<race>
			<renderTree>VFEI2_Unarmored</renderTree>
			<body>BeetleLikeWithClaw</body>
			<baseHungerRate>0.35</baseHungerRate>
			<baseBodySize>3</baseBodySize>
			<baseHealthScale>6</baseHealthScale>
		
			<useMeatFrom>Megaspider</useMeatFrom>
			<wildness>0.95</wildness>
			<lifeExpectancy>6</lifeExpectancy>
			<trainability>Advanced</trainability>
			<leatherDef>VFEI2_Chitin</leatherDef>
			<lifeStageAges>
				<li>
					<def>EusocialInsectLarva</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>EusocialInsectJuvenile</def>
					<minAge>0.03</minAge>
				</li>
				<li>
					<def>EusocialInsectAdult</def>
					<minAge>0.2</minAge>
					<soundWounded>Pawn_BigInsect_Pain</soundWounded>
					<soundDeath>Pawn_BigInsect_Death</soundDeath>
					<soundCall>Pawn_BigInsect_Call</soundCall>
					<soundAngry>Pawn_BigInsect_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
	</ThingDef>
	<PawnKindDef ParentName="AnimalKindBase">
		<defName>VFEI2_Nursepillworm</defName>
		<label>nursepillworm</label>
		<race>VFEI2_Nursepillworm</race>
		<combatPower>450</combatPower>
		<canArriveManhunter>false</canArriveManhunter>
		<ecoSystemWeight>0.50</ecoSystemWeight>
		<defaultFactionType>Insect</defaultFactionType>
		<aiAvoidCover>false</aiAvoidCover>
		<defendPointRadius>0</defendPointRadius>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Animal/Nursepillworm/Nursepillworm</texPath>
					<color>(137, 143, 147)</color>
					<drawSize>1.75</drawSize>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Nursepillworm/Dessicated_Nursepillworm</texPath>
					<drawSize>1.75</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Animal/Nursepillworm/Nursepillworm</texPath>
					<drawSize>2.5</drawSize>
					<color>(137, 143, 147)</color>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Nursepillworm/Dessicated_Nursepillworm</texPath>
					<drawSize>2.5</drawSize>
				</dessicatedBodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Animal/Nursepillworm/Nursepillworm</texPath>
					<drawSize>3</drawSize>
					<color>(137, 143, 147)</color>
					<shadowData>
						<volume>(0.5, 0.7, 0.43)</volume>
						<offset>(0,0,-0.1)</offset>
					</shadowData>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Nursepillworm/Dessicated_Nursepillworm</texPath>
					<drawSize>3</drawSize>
				</dessicatedBodyGraphicData>
			</li>
		</lifeStages>
	</PawnKindDef>
</Defs>