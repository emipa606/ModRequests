    <HediffDef>
        <defName>VFEI2_Swarm_Attack_Taget</defName>
		<label>Attacked by a swarm</label>
        <description>Continuously suffered bite damage and the vision is obstructed.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(.8,0,0)</defaultLabelColor>
        <scenarioCanAdd>false</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <stages>
			<li>
                <capMods>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.00</setMax>
                    </li>
				</capMods>
			</li>
		</stages>
        <comps>
            <li Class="Regeneration.HediffCompProperties_Damage">
                <damage>Bite</damage>            
