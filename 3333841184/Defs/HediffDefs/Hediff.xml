    <HediffDef>
		<defName>VFEI2_ViscosityAcid</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<label>viscosity acid</label>
		<makesSickThought>true</makesSickThought>
		<description>Continuously damaged by acid burn and difficult to move.</description>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-4</severityPerDayNotImmune>
			</li>
			<li Class="Regeneration.HediffCompProperties_Damage">
                <damage>AcidBurn</damage>            
                <amount>1</amount>
                <armorPenetration>2</armorPenetration>
            </li>
		</comps>
		<stages>
			<li>
				<label>minor, receiving burns</label>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.75</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate, receiving burns</label>
				<minSeverity>0.40</minSeverity>
				<vomitMtbDays>5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious, receiving burns</label>
				<minSeverity>0.60</minSeverity>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.25</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

