<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <JobDef>
        <defName>VFEI2_Strong_LayDown</defName>
        <driverClass>Regeneration.JobDriver_RestInInsectPoint</driverClass>
        <reportString>lying down.</reportString>
        <casualInterruptible>false</casualInterruptible>
        <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
        <neverShowWeapon>true</neverShowWeapon>
    </JobDef>

    <ThingDef ParentName="VFEI2_BuildingInsectoidBase">
        <defName>VFEI2_DormantPod</defName>
        <thingClass>Building_Bed</thingClass>
        <label>dormant pod</label>
        <description>A hive-like structure created by giant insects.It will put the insects into a dormant state until they receive a command to wake up.Needs to be constructed on the creep.</description>
        <size>(1,1)</size>
        <passability>Standable</passability>
        <designationCategory>VFEI2_Insectoids</designationCategory>
        <researchPrerequisites>
			<li>VFEI2_StandardHivetech</li>
		</researchPrerequisites>
        <terrainAffordanceNeeded>VFEI2_Creep</terrainAffordanceNeeded>
        <costList>
			<InsectJelly>100</InsectJelly>
		</costList>
        <scatterableOnMapGen>false</scatterableOnMapGen>
        <rotatable>false</rotatable>
        <graphicData>
            <texPath>Things/Building/DormantPod</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <tickerType>Normal</tickerType>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>1.0</Flammability>
			<MarketValue>50</MarketValue>
			<WorkToBuild>1500</WorkToBuild>
        </statBases>
        <drawGUIOverlay>false</drawGUIOverlay>
        <building>
            <bed_humanlike>false</bed_humanlike>
            <bed_UseSheetColor>false</bed_UseSheetColor>
            <bed_showSleeperBody>True</bed_showSleeperBody>
            <sowTag>SupportPlantsOnly</sowTag>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <wakeDormantPawnsOnConstruction>false</wakeDormantPawnsOnConstruction>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
        </building>
        <comps>
            <li Class="CompProperties_AssignableToPawn">
                <drawAssignmentOverlay>false</drawAssignmentOverlay>
                <compClass>Regeneration.CompAssignableToPawn_Insect</compClass>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="VFEI2_BuildingInsectoidBase">
        <defName>VFEI2_Indestructible_DormantPod</defName>
        <thingClass>Building_Bed</thingClass>
        <label>indestructible dormant pod</label>
        <description>A hive-like structure created by giant insects.It will put the insects into a dormant state until they receive a command to wake up.</description>
        <size>(1,1)</size>
        <passability>Standable</passability>
        <designationCategory>VFEI2_Insectoids</designationCategory>
        <researchPrerequisites>
			<li>VFEI2_StandardHivetech</li>
		</researchPrerequisites>
        <costList>
			<InsectJelly>100</InsectJelly>
            <VFEI2_PherocoreSorne>1</VFEI2_PherocoreSorne>
		</costList>
        <scatterableOnMapGen>false</scatterableOnMapGen>
        <useHitPoints>False</useHitPoints>
        <rotatable>false</rotatable>
        <graphicData>
            <texPath>Things/Building/DormantPod</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <tickerType>Normal</tickerType>
        <statBases>
			<Mass>4</Mass>
			<WorkToBuild>1500</WorkToBuild>
        </statBases>
        <drawGUIOverlay>false</drawGUIOverlay>
        <building>
            <bed_humanlike>false</bed_humanlike>
            <bed_UseSheetColor>false</bed_UseSheetColor>
            <bed_showSleeperBody>True</bed_showSleeperBody>
            <sowTag>SupportPlantsOnly</sowTag>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <wakeDormantPawnsOnConstruction>false</wakeDormantPawnsOnConstruction>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
        </building>
        <comps>
            <li Class="CompProperties_AssignableToPawn">
                <drawAssignmentOverlay>false</drawAssignmentOverlay>
                <compClass>Regeneration.CompAssignableToPawn_Insect</compClass>
            </li>
        </comps>
    </ThingDef>

</Defs>