<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<IssueDef>
		<defName>Worship</defName>
		<label>worship</label>
		<iconPath>worship_precept</iconPath>
	</IssueDef>

	<IssueDef>
		<defName>Sacrifice</defName>
		<label>sacrifice</label>
		<iconPath>sacrifice_precept</iconPath>
	</IssueDef>

	<PreceptDef>
		<defName>Worship_Neutral</defName>
		<issue>Worship</issue>
		<label>don't care</label>
		<description>To worship a deity is admirable but not necessary.</description>
		<impact>Low</impact>
		<displayOrderInIssue>10</displayOrderInIssue>
		<displayOrderInImpact>50</displayOrderInImpact>
		<associatedMemes>
			<li>Structure_TheistEmbodied</li>
			<li>Structure_TheistAbstract</li>
			<li>Structure_Archist</li>
			<li>Structure_OriginChristian</li>
			<li>Structure_OriginIslamic</li>
			<li>Structure_OriginHindu</li>
			<li>Structure_OriginBuddhist</li>
		</associatedMemes>
	</PreceptDef>

	<PreceptDef>
		<defName>Worship_Required</defName>
		<issue>Worship</issue>
		<label>required</label>
		<description>To worship a higher power is absolutely essential to a meaningful life.</description>
		<impact>High</impact>
		<displayOrderInIssue>0</displayOrderInIssue>
		<displayOrderInImpact>100</displayOrderInImpact>
		<associatedMemes>
			<li>Structure_TheistEmbodied</li>
			<li>Structure_TheistAbstract</li>
			<li>Structure_Archist</li>
			<li>Structure_OriginChristian</li>
			<li>Structure_OriginIslamic</li>
			<li>Structure_OriginHindu</li>
			<li>Structure_OriginBuddhist</li>
		</associatedMemes>
		<comps>
			<li Class="PreceptComp_SituationalThought">
				<thought>WantsWorship</thought>
			</li>
			<li Class="PreceptComp_SituationalThought">
				<thought>WorshipSatisfied</thought>
			</li>
		</comps>
	</PreceptDef>

	<PreceptDef>
		<defName>Sacrifice_Abhorrent</defName>
		<issue>Sacrifice</issue>
		<label>abhorrent</label>
		<description>Sacrificing a life that could be spent worshipping our deity is repulsive and an afront to our beliefs.</description>
		<impact>Medium</impact>
		<displayOrderInIssue>20</displayOrderInIssue>
		<displayOrderInImpact>80</displayOrderInImpact>
		<associatedMemes>
			<li>Structure_TheistEmbodied</li>
			<li>Structure_TheistAbstract</li>
			<li>Structure_Archist</li>
			<li>Structure_OriginChristian</li>
			<li>Structure_OriginIslamic</li>
			<li>Structure_OriginHindu</li>
			<li>Structure_OriginBuddhist</li>
		</associatedMemes>
		<comps>
			<li Class="PreceptComp_KnowsMemoryThought">
				<eventDef>SacrificePerformed</eventDef>
				<thought>SacrificePerformed_Know_Abhorrent</thought>
			</li>
		</comps>
	</PreceptDef>

	<PreceptDef>
		<defName>Sacrifice_Neutral</defName>
		<issue>Sacrifice</issue>
		<label>don't care</label>
		<description>Sacrifices are a perfectly fine way of appeasing our deity.</description>
		<impact>Low</impact>
		<displayOrderInIssue>10</displayOrderInIssue>
		<displayOrderInImpact>60</displayOrderInImpact>
		<associatedMemes>
			<li>Structure_TheistEmbodied</li>
			<li>Structure_TheistAbstract</li>
			<li>Structure_Archist</li>
			<li>Structure_OriginChristian</li>
			<li>Structure_OriginIslamic</li>
			<li>Structure_OriginHindu</li>
			<li>Structure_OriginBuddhist</li>
		</associatedMemes>
		<comps>
		</comps>
	</PreceptDef>

	<PreceptDef>
		<defName>Sacrifice_Required</defName>
		<issue>Sacrifice</issue>
		<label>required</label>
		<description>Our deity is hungry - Sacrifices are the best and most beautiful way to appease them.</description>
		<impact>High</impact>
		<displayOrderInIssue>0</displayOrderInIssue>
		<displayOrderInImpact>120</displayOrderInImpact>
		<associatedMemes>
			<li>Structure_TheistEmbodied</li>
			<li>Structure_TheistAbstract</li>
			<li>Structure_Archist</li>
			<li>Structure_OriginChristian</li>
			<li>Structure_OriginIslamic</li>
			<li>Structure_OriginHindu</li>
			<li>Structure_OriginBuddhist</li>
		</associatedMemes>
		<comps>
			<li Class="PreceptComp_KnowsMemoryThought">
				<eventDef>SacrificePerformed</eventDef>
				<thought>SacrificePerformed_Know_Required</thought>
			</li>
			<li Class="PreceptComp_SituationalThought">
				<thought>WantsSacrifice</thought>
			</li>
		</comps>
	</PreceptDef>

	<PreceptDef>
		<defName>Blessing</defName>
		<label>blessing</label>
		<description>A divine channeling session that lets a deity bestow blessings on one of their worshippers.</description>
		<issue>Ritual</issue>
		<impact>Medium</impact>
		<iconPath>blessing_ritual</iconPath>
		<preceptClass>Precept_Ritual</preceptClass>
		<ritualPatternBase>Blessing</ritualPatternBase>
		<allowDuplicates>false</allowDuplicates>
		<countsTowardsPreceptLimit>false</countsTowardsPreceptLimit>
		<selectionWeight>1.0</selectionWeight>
		<displayOrderInImpact>100</displayOrderInImpact>
		<ignoreLimitsInEditMode>false</ignoreLimitsInEditMode>
		<classic>false</classic>
	</PreceptDef>
</Defs>
