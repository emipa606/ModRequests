<Defs>
	<!-- Upgrade To Trooper Helmet -->
	<RecipeDef MayRequire="VanillaExpanded.VARME">
		<defName>UpgradeToTrooperHelmet</defName>
		<label>upgrade to trooper helmet</label>
		<description>Upgrade Flak Helmet to Trooper Helmet.</description>
		<jobString>Upgrading Flak Helmet to Trooper Helmet.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workAmount>6500</workAmount>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<recipeUsers>
			<li>FabricationBench</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Apparel_AdvancedHelmet</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Apparel_AdvancedHelmet</li>
				<li>Plasteel</li>
				<li>ComponentSpacer</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<VAE_Headgear_TrooperHelmet>1</VAE_Headgear_TrooperHelmet>
		</products>
		<researchPrerequisite>VAE_TrooperArmor</researchPrerequisite>
		<skillRequirements>
			<Crafting>6</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>

