<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="VFEP_BaseMeleeWeapon_Warcasket">
    <defName>VFEP_WarcasketMeleeWeapon_PowerSword</defName>
    <label>warcasket power sword</label>
    <description>A heavy gilded sword coated in a corona of disruptive energy. This field allows the blade to carve through bones, flesh and plasteel with ease. Originally wielded by high graded space marines, it quickly became a rarity after the wars raging within the systems.</description>
	<thingClass>VFECore.ThingWithFloorGraphic</thingClass>
    <graphicData>
      <texPath>Things/Weapons/PowerSword</texPath>
	  <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
	  <MarketValue>3700</MarketValue>
      <Mass>20</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>16</power>
        <cooldownTime>1.2</cooldownTime>
		<armorPenetration>0.1</armorPenetration>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>28</power>
        <cooldownTime>2</cooldownTime>
		<armorPenetration>0.8</armorPenetration>
		<soundMeleeHit>Primaris_MeleeHit_Powersword_Swing</soundMeleeHit>
        <extraMeleeDamages>
          <li>
            <def>EMP</def>
            <amount>10</amount>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>38</power>
        <cooldownTime>2.6</cooldownTime>
		<armorPenetration>0.8</armorPenetration>
		<soundMeleeHit>Primaris_MeleeHit_Powersword_Swing</soundMeleeHit>
        <extraMeleeDamages>
          <li>
            <def>EMP</def>
            <amount>10</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
	<modExtensions>
		<li Class="VFECore.FloorGraphicExtension">
			<graphicData>
				<graphicClass>Graphic_Single</graphicClass>
				<texPath>Things/WeaponsBoxed/WarcasketPowersword_OnFloor</texPath>
				<onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
				<drawSize>1</drawSize>
			</graphicData>
		</li>
	</modExtensions>
  </ThingDef>

  <ThingDef ParentName="VFEP_BaseMeleeWeapon_Warcasket">
    <defName>VFEP_WarcasketMeleeWeapon_ChainSword</defName>
    <label>warcasket chainsword</label>
    <description>Single edged and with a row of motorized, razor-sharp teeth, this subtle weapon is one that inspires fear in all those who can hear it and dread in those about to be mercilessly torn apart.</description>
	<thingClass>VFECore.ThingWithFloorGraphic</thingClass>
    <graphicData>
      <texPath>Things/Weapons/ChainSword</texPath>
	  <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
	  <MarketValue>1200</MarketValue>
      <WorkToMake>40000</WorkToMake>
      <Mass>13</Mass>
    </statBases>
    <equippedAngleOffset>-45</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.2</cooldownTime>
		<armorPenetration>0.1</armorPenetration>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>32</power>
        <cooldownTime>2.4</cooldownTime>
		<armorPenetration>0.65</armorPenetration>
		<soundMeleeHit>Primaris_MeleeHit_Chainsword_Swing</soundMeleeHit>
      </li>          
       <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>28</power>
        <cooldownTime>2.2</cooldownTime>
		<armorPenetration>0.55</armorPenetration>
		<soundMeleeHit>Primaris_MeleeHit_Chainsword_Swing</soundMeleeHit>
      </li>
    </tools>
	<modExtensions>
		<li Class="VFECore.FloorGraphicExtension">
			<graphicData>
				<graphicClass>Graphic_Single</graphicClass>
				<texPath>Things/WeaponsBoxed/WarcasketChainsword_OnFloor</texPath>
				<onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
				<drawSize>1</drawSize>
			</graphicData>
		</li>
	</modExtensions>
  </ThingDef>
</Defs>
