    <statBases>
      <WorkToBuild>8000</WorkToBuild>
      <Beauty>10</Beauty>
      <CleaningTimeFactor>0.5</CleaningTimeFactor>
    </statBases>
	
	<costList>
      <Gold>20</Gold>
	   <Silver>5</Silver>
	 
    </costList>

    <researchPrerequisites>
      <li>Stonecutting</li>
