<Defs>

	<!--============================ Mithril ===============================-->
	
  <ThingDef ParentName="ResourceBase">
    <defName>Mithril</defName>
    <label>mithril</label>
    <description>A metal that resembles silver but is stronger and lighter than steel.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Mithril</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>9.0</MarketValue>
      <Mass>0.3</Mass>
      <StuffPower_Armor_Sharp>3</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>1</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
	  <SharpDamageMultiplier>1.5</SharpDamageMultiplier>
      <BluntDamageMultiplier>1</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <slagDef>ChunkSlagSteel</slagDef>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>0.2</deepCommonality>
    <deepCountPerPortion>5</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>5</min>
      <max>10</max>
    </deepLumpSizeRange>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.2</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(255,255,255)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>5</MaxHitPoints>
        <Beauty>5</Beauty>
        <Flammability>0</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>
  
