<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============================ Mithril ===============================-->

  <ThingDef ParentName="RockBase">
    <defName>MineableMithril</defName>
    <label>mithril ore</label>
    <description>Rock containing bits of mithril.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(114,114,114)</color>
      <colorTwo>(255,255,255)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>3000</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>Mithril</mineableThing>
      <mineableYield>20</mineableYield>
      <mineableScatterCommonality>0.08</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>2</min>
        <max>4</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
  
