<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>Ehi_Hediff_HungerRage</defName>
    <label>ursine rage</label>
    <description>Fat Larry's Golden Shower is a powerful weapon, having accrued the power of Jorises past and present over its long and bloody journey. Now, it grants its gift to any who would take it into battle once more.\n\nAny colonist who equips the Golden Shower will eat more quickly and require meals more often - but the Golden Shower will increase in strength as its owner grows more and more hungry.</description>
    <descriptionHyperlinks>
      <ThingDef>Ehi_Gun_GoldenShower</ThingDef>
    </descriptionHyperlinks>
    <scenarioCanAdd>false</scenarioCanAdd>
    <isBad>false</isBad>
    <hediffClass>Ehi_FatLarrysGoldenShower.Hediff_HungerRage</hediffClass>
    <defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Effecter">
        <stateEffecter>Berserk</stateEffecter>
        <severityIndices>
          <min>0.75</min>
          <max>1</max>
        </severityIndices>
      </li>
    </comps>
    <stages>
      <li>
        <label>calm</label>
        <hungerRateFactorOffset>+0.15</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Eating</capacity>
            <offset>+0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>unsettled</label>
        <hungerRateFactorOffset>+0.15</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Eating</capacity>
            <offset>+0.1</offset>
          </li>
        </capMods>
        <statOffsets>
          <RangedWeapon_DamageMultiplier>+0.1</RangedWeapon_DamageMultiplier>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>angered</label>
        <hungerRateFactorOffset>+0.15</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Eating</capacity>
            <offset>+0.1</offset>
          </li>
        </capMods>
        <statOffsets>
          <RangedWeapon_DamageMultiplier>+0.2</RangedWeapon_DamageMultiplier>
          <RangedWeapon_Cooldown>-0.2</RangedWeapon_Cooldown>
          <BluntDamageMultiplier>+0.125</BluntDamageMultiplier>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.75</minSeverity>
        <label>enraged</label>
        <hungerRateFactorOffset>+0.15</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Eating</capacity>
            <offset>+0.1</offset>
          </li>
        </capMods>
        <statOffsets>
          <RangedWeapon_DamageMultiplier>+0.4</RangedWeapon_DamageMultiplier>
          <RangedWeapon_Cooldown>-0.6</RangedWeapon_Cooldown>
          <BluntDamageMultiplier>+0.25</BluntDamageMultiplier>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>berserk</label>
        <hungerRateFactorOffset>+0.10</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Eating</capacity>
            <offset>+0.1</offset>
          </li>
        </capMods>
        <painFactor>0.85</painFactor>
        <statOffsets>
          <RangedWeapon_DamageMultiplier>+1</RangedWeapon_DamageMultiplier>
          <RangedWeapon_Cooldown>-1.2</RangedWeapon_Cooldown>
          <BluntDamageMultiplier>+0.4</BluntDamageMultiplier>
        </statOffsets>
      </li>

      <li>
        <minSeverity>1</minSeverity>
        <label>banned from Mr Streamer's Discord server</label>
        <hungerRateFactorOffset>+0.05</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Eating</capacity>
            <offset>+0.1</offset>
          </li>
        </capMods>
        <painFactor>0.7</painFactor>
        <statOffsets>
          <RangedWeapon_DamageMultiplier>+2</RangedWeapon_DamageMultiplier>
          <RangedWeapon_Cooldown>-1.4</RangedWeapon_Cooldown>
          <BluntDamageMultiplier>+0.6</BluntDamageMultiplier>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>
