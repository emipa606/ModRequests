<?xml version="1.0" encoding="utf-8"?>

<Patch>
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>

			<!-- Tube Television -->
		
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "TubeTelevision"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>65</basePowerConsumption>
				</value>
			</li>
			
			<!-- Flatscreen Television -->
		
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "FlatscreenTelevision"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>110</basePowerConsumption>
				</value>
			</li>
			
			<!-- Megascreen Television -->
		
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "MegascreenTelevision"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>150</basePowerConsumption>
				</value>
			</li>
			
		</operations>
	</Operation>

</Patch>