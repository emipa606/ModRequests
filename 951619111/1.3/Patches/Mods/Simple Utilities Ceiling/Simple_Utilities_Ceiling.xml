<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			
			<li Class="PatchOperationTest">
				<xpath>Defs/ThingDef[defName = "Owl_CeilingLight"]</xpath>
			</li>

	<!-- Ceiling Light Base -->
		
		<li Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[@Name = "CeilingLightBase"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
			<value>
				<basePowerConsumption>10</basePowerConsumption>
			</value>
		</li>
			
	<!-- Long Ceiling Light -->
		
		<li Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Owl_LongCeilingLight"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
			<value>
				<basePowerConsumption>15</basePowerConsumption>
			</value>
		</li>
			
		</operations>
	</Operation>
	
</Patch>