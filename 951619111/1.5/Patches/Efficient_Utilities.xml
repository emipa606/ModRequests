<?xml version="1.0" encoding="utf-8"?>

<Patch>
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
	
			<!-- Core -->
			
			<!-- Standing Lamp -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "StandingLamp"]/comps/li[@Class = "CompProperties_Power"]</xpath>
				<value>
					<li Class="CompProperties_Power">
						<compClass>CompPowerTrader</compClass>
						<basePowerConsumption>15</basePowerConsumption>
					</li>
				</value>
			</li>
			
			<!-- SunLamp -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "SunLamp"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>1000</basePowerConsumption>
				</value>
			</li>
			
			<!-- Wall Lamp -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "WallLamp"]/comps/li[@Class = "CompProperties_Power"]</xpath>
				<value>
					<li Class="CompProperties_Power">
						<compClass>CompPowerTrader</compClass>
						<basePowerConsumption>15</basePowerConsumption>
					</li>
				</value>
			</li>
			
			<!-- Flood Light -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "FloodLight"]/comps/li[@Class = "CompProperties_Power"]</xpath>
				<value>
					<li Class="CompProperties_Power">
						<compClass>CompPowerTrader</compClass>
						<basePowerConsumption>50</basePowerConsumption>
					</li>
				</value>
			</li>

			<!-- Autodoor -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "Autodoor"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>25</basePowerConsumption>
				</value>
			</li>

			<!-- Vitals Monitor -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "VitalsMonitor"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>40</basePowerConsumption>
				</value>
			</li>
			
			<!-- Tube Television -->
		
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "TubeTelevision"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>65</basePowerConsumption>
				</value>
			</li>
			
			<!-- Flatscreen Television -->
		
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "FlatscreenTelevision"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>110</basePowerConsumption>
				</value>
			</li>
			
			<!-- Megascreen Television -->
		
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "MegascreenTelevision"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<value>
					<basePowerConsumption>150</basePowerConsumption>
				</value>
			</li>
			
		</operations>
	</Operation>

</Patch>