<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>

	<!-- Ceiling Light Base -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name = "CeilingLightBase"]/comps/li[@Class = "CompProperties_Power"]</xpath>
				<value>
					<li Class="CompProperties_Power">
						<compClass>CompPowerTrader</compClass>
						<basePowerConsumption>15</basePowerConsumption>
					</li>
				</value>
			</li>
			
	<!-- Long Ceiling Light -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "Owl_LongCeilingLight"]/comps/li[@Class = "CompProperties_Power"]</xpath>
				<value>
					<li Class="CompProperties_Power">
						<compClass>CompPowerTrader</compClass>
						<basePowerConsumption>20</basePowerConsumption>
					</li>
				</value>
			</li>
			
		</operations>
	</Operation>
	
</Patch>