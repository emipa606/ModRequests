<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>RimCuisine 2 Core (Continued)</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="RC2_MealJuice"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.80</water>
                            <SeekForThirst>true</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="RC2_Coffee"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.80</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="RC2_GreenTea"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.80</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>