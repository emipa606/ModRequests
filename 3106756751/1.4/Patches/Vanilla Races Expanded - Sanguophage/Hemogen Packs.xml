<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Races Expanded - Sanguophage</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="VRE_HemogenPack_Animal"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.10</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="VRE_HemogenPack_Corpse"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.10</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="VRE_HemogenPack_Sanguophage"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.10</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>