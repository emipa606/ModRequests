<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Apothecary (Continued)</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="AYElixirCalming"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.60</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="AYElixirInciting"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.60</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="AYElixirLucidity"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.60</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="AYElixirSoothing"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.60</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>