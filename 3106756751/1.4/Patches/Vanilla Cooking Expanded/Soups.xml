<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Cooking Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="VCE_CookedSoupSimple"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.70</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="VCE_CookedSoupFine"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.70</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="VCE_CookedSoupLavish"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.70</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="VCE_CookedSoupGourmet"]</xpath>
                    <value>
                        <li Class="DubsBadHygiene.WaterExt">
                            <water>0.70</water>
                            <SeekForThirst>false</SeekForThirst>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>