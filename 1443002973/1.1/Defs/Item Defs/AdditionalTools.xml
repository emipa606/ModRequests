<Defs>

<!-- Wood Tools-->

<!-- Pickaxe -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>Pickaxe_Wood</defName>
    <label>Wooden Pickaxe</label>
    <description>A Wooden Pickaxe, used to assist in mining.</description>
    <graphicData>
      <texPath>Wood/Wood_Pickaxe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <statBases>
      <WorkToMake>400</WorkToMake>
      <Mass>1.25</Mass>
    </statBases>
    <equippedStatOffsets>
      <MiningSpeed>4</MiningSpeed>
      <MiningYield>4</MiningYield>
    </equippedStatOffsets>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <recipeMaker>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>AdditionalTools_Research</researchPrerequisite>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
    </recipeMaker>
      <costList>
        <WoodLog>45</WoodLog>
        <Cloth>5</Cloth>
      </costList>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8.8</power>
        <cooldownTime>4.0</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15.8</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
  </ThingDef>

