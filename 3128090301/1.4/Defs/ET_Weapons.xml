<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="BaseBullet">
    <defName>ET_Blade</defName>
    <label>ET.blade</label>
    <graphicData>
      <texPath>Things/Projectile/ETBladeB</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>Cut</damageDef>
      <damageAmountBase>16</damageAmountBase>
      <armorPenetrationBase>2</armorPenetrationBase>
      <stoppingPower>1</stoppingPower>
      <speed>60</speed>
    </projectile>
    <comps>
      <li Class="VFECore.CompProperties_HomingProjectile">
        <homingDistanceFractionPassed>0.7</homingDistanceFractionPassed>
        <homingCorrectionTickRate>1</homingCorrectionTickRate>
        <initialDispersionFromTarget>3</initialDispersionFromTarget>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="BaseETWeaponMelee" Abstract="True" ParentName="BaseWeapon">
    <comps>
    </comps>
    <burnableByRecipe>false</burnableByRecipe>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <weaponClasses>
      <li>Melee</li>
      <li>Ultratech</li>
    </weaponClasses>
    <weaponTags>
      <li>ETD</li>
    </weaponTags>
    <techLevel>Ultra</techLevel>
    <relicChance>0</relicChance>
    <smeltable>false</smeltable>
    <useHitPoints>false</useHitPoints>
    <thingSetMakerTags>
      <li></li>
    </thingSetMakerTags>
    <tradeTags>
      <li></li>
    </tradeTags>
  </ThingDef>

  <ThingDef ParentName="BaseETWeaponMelee">
    <defName>ET_Weapon_PETD</defName>
    <label>ET.device(Prototype)</label>
    <description>A prototype device that automatically translates the user thoughts into ET language.</description>
    <graphicData>
      <texPath>Things/Item/PETD</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_BladelinkPlasmaSword</soundInteract>
    <meleeHitSound>Pawn_Melee_PowerClaw_Hit</meleeHitSound>
    <statBases>
      <MarketValue>10000</MarketValue>
      <Mass>0</Mass>
      <Beauty>80</Beauty>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <equippedStatOffsets>
      <PsychicSensitivityOffset>0.24</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>120</PsychicEntropyRecoveryRate>
      <MoveSpeed>+6.00</MoveSpeed>
      <MeleeHitChance>+20</MeleeHitChance>
      <MeleeDodgeChance>+50</MeleeDodgeChance>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <accuracyTouch>20</accuracyTouch>
        <accuracyShort>0.08</accuracyShort>
        <accuracyMedium>0.0</accuracyMedium>
        <accuracyLong>0.0</accuracyLong>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ET_Blade</defaultProjectile>
        <warmupTime>0.4</warmupTime>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <minRange>0</minRange>
        <range>18</range>
        <soundCast>Pawn_Melee_PowerClaw_Hit</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>0</muzzleFlashScale>
        <label>ET.Blade</label>
        <commonality>0</commonality>
      </li>
    </verbs>
    <tools>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>0.06</cooldownTime>
        <armorPenetration>2</armorPenetration>
      </li>
    </tools>
    <tradeability>None</tradeability>
  </ThingDef>

  <RecipeDef>
    <defName>Make_ET_Weapon_PETD</defName>
    <label>make ET.device(Prototype)</label>
    <description>Produced ET.device (Prototype)</description>
    <descriptionHyperlinks>
      <ThingDef>ET_Weapon_PETD</ThingDef>
    </descriptionHyperlinks>
    <jobString>ET.device (prototype) is being manufactured.</jobString>
    <workAmount>60000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ET_Embryo</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ET_HO_ArmorAT</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ET_Liquid_Ether</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ET_Embryo</li>
        <li>ET_HO_ArmorAT</li>
        <li>ET_Liquid_Ether</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ET_Weapon_PETD>1</ET_Weapon_PETD>
    </products>
    <skillRequirements>
      <Intellectual>18</Intellectual>
      <Social>18</Social>
    </skillRequirements>
    <workSkill>Social</workSkill>
    <researchPrerequisite>ET_device</researchPrerequisite>
    <recipeUsers>
      <li>ET_Manipulator</li>
    </recipeUsers>
    <displayPriority>9910</displayPriority>
  </RecipeDef>
  
</Defs>
