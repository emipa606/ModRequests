      <ImmunityGainSpeed>10</ImmunityGainSpeed>
      <MarketValue>350</MarketValue>
      <Mass>8</Mass>
    </statBases>
    <tools>
      <li>
        <label>Left Hand</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <cooldownTime>0.80</cooldownTime>
        <power>5</power>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>Right Hand</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <cooldownTime>0.80</cooldownTime>
        <power>5</power>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <race>
      <body>Human</body>
      <petness>0.8</petness>
      <baseBodySize>2.0</baseBodySize>
      <baseHungerRate>0</baseHungerRate>
      <leatherDef>Cloth</leatherDef>
      <useMeatFrom>Chicken</useMeatFrom>
      <baseHealthScale>2.20</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <hasGenders>false</hasGenders>
      <trainability>Advanced</trainability>
      <nameOnTameChance>0.4</nameOnTameChance>
      <manhunterOnTameFailChance>0.01</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.1</manhunterOnDamageChance>
      <wildness>0</wildness>
      <nuzzleMtbHours>60</nuzzleMtbHours>
      <packAnimal>true</packAnimal>
      <wildBiomes>
        <SeaIce>0.001</SeaIce>
        <IceSheet>0.001</IceSheet>
        <Tundra>0.001</Tundra>
        <BorealForest>0.005</BorealForest>
        <TemperateForest>0.005</TemperateForest>
        <TropicalRainforest>0.005</TropicalRainforest>
        <AridShrubland>0.001</AridShrubland>
        <Desert>0.001</Desert>
        <ExtremeDesert>0.001</ExtremeDesert>
        <TemperateSwamp>0.005</TemperateSwamp>
        <ColdBog>0.005</ColdBog>
        <TropicalSwamp>0.005</TropicalSwamp>
      </wildBiomes>
      <lifeExpectancy>100</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalAdult</def>
          <minAge>0</minAge>
        </li>
      </lifeStageAges>
          <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
          <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
          <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <comps>
      <li Class="CompProperties_Spawner">
        <thingToSpawn>ExorciseCandle</thingToSpawn>
        <spawnCount>1</spawnCount>
        <spawnIntervalRange>
          <min>900000</min>
          <max>1200000</max>
        </spawnIntervalRange>
        <spawnMaxAdjacent>1</spawnMaxAdjacent>
        <saveKeysPrefix>pod</saveKeysPrefix>
        <inheritFaction>true</inheritFaction>
      </li>
    </comps>
   <butcherProducts>
        <WoodLog>30</WoodLog>
        <Cloth>20</Cloth>
        <Hay>40</Hay>	
   </butcherProducts>
    <tradeTags>
      <li>AnimalFarm</li>
      <li>AnimalUncommon</li>
    </tradeTags>
