<Defs>
  <ThingDef ParentName="HalloweenParade">
    <defName>PumpkinAnger</defName>
    <label>Jack o'lantern</label>
    <description>Someone seems to have put magic on the pumpkin decorations made during the Halloween season.\n This pumpkin that starts moving does nothing in particular, but occasionally drops Halloween sweet. \nSome of the angry face pumpkins in adulthood are packed with magical crispy pumpkin cookies ...</description>
    <statBases>
      <MoveSpeed>3.0</MoveSpeed>
      <ComfyTemperatureMin>-30</ComfyTemperatureMin>
      <ComfyTemperatureMax>80</ComfyTemperatureMax>
      <MeatAmount>0</MeatAmount>
      <LeatherAmount>0</LeatherAmount>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
      <ArmorRating_Heat>0.80</ArmorRating_Heat>
      <ToxicSensitivity>0</ToxicSensitivity>
      <PsychicSensitivity>0</PsychicSensitivity>
      <Flammability>0.8</Flammability>
      <RestRateMultiplier>7</RestRateMultiplier>
      <ImmunityGainSpeed>10</ImmunityGainSpeed>
      <MarketValue>350</MarketValue>
      <Mass>5</Mass>
    </statBases>
    <tools>
      <li>
        <label>Head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <cooldownTime>1.55</cooldownTime>
        <power>5</power>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <race>
      <body>Pumpkin</body>
      <petness>0.8</petness>
      <baseBodySize>0.3</baseBodySize>
      <baseHungerRate>0</baseHungerRate>
      <leatherDef>PumpkinHull</leatherDef>
      <useMeatFrom>Chicken</useMeatFrom>
      <baseHealthScale>0.70</baseHealthScale>
      <foodType>VegetarianRoughAnimal,OmnivoreAnimal</foodType>
      <hasGenders>false</hasGenders>
      <trainability>Simple</trainability>
      <nameOnTameChance>0.4</nameOnTameChance>
      <manhunterOnTameFailChance>0.01</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.1</manhunterOnDamageChance>
      <wildness>0</wildness>
      <nuzzleMtbHours>35</nuzzleMtbHours>
      <packAnimal>false</packAnimal>
      <wildBiomes>
        <SeaIce>0.001</SeaIce>
        <IceSheet>0.001</IceSheet>
        <Tundra>0.001</Tundra>
        <BorealForest>0.02</BorealForest>
        <TemperateForest>0.02</TemperateForest>
        <TropicalRainforest>0.02</TropicalRainforest>
        <AridShrubland>0.02</AridShrubland>
        <Desert>0.001</Desert>
        <ExtremeDesert>0.001</ExtremeDesert>
        <TemperateSwamp>0.02</TemperateSwamp>
        <ColdBog>0.02</ColdBog>
        <TropicalSwamp>0.02</TropicalSwamp>
      </wildBiomes>
      <lifeExpectancy>1000</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>150</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>350</minAge>
        </li>
      </lifeStageAges>
          <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
          <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
          <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>

    </race>
    <butcherProducts>
      <PumpkinHull>50</PumpkinHull>
    </butcherProducts>
    <comps>
      <li Class="CompProperties_Spawner">
        <thingToSpawn>PumpkinCookie</thingToSpawn>
        <spawnCount>1</spawnCount>
        <spawnIntervalRange>
          <min>140000</min>
          <max>250000</max>
        </spawnIntervalRange>
        <spawnMaxAdjacent>100</spawnMaxAdjacent>
        <spawnForbidden>false</spawnForbidden>
      </li>
    </comps>
    <tradeTags>
      <li>AnimalPet</li>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>




