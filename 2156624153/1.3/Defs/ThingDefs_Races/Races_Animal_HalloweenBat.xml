<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="HalloweenParade">
    <defName>HalloweenBat</defName>
    <label>Halloween Bat</label>
    <description>Bats from the old forest.\nStrangely friendly, gathering the fruits of the forest in a basket and putting them gently as a gift for humans.</description>
    <statBases>
      <MoveSpeed>4.0</MoveSpeed>
      <ComfyTemperatureMin>-15</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
      <MeatAmount>30</MeatAmount>
      <LeatherAmount>20</LeatherAmount>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
      <ArmorRating_Heat>0.3</ArmorRating_Heat>
      <ToxicSensitivity>0</ToxicSensitivity>
      <PsychicSensitivity>0.3</PsychicSensitivity>
      <Flammability>1.0</Flammability>
      <RestRateMultiplier>1</RestRateMultiplier>
      <ImmunityGainSpeed>2</ImmunityGainSpeed>
      <MarketValue>50</MarketValue>
      <Mass>2</Mass>
    </statBases>
    <tools>
      <li>
        <label>Head</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <cooldownTime>1.30</cooldownTime>
        <power>4</power>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>ToxicBite</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <race>
      <body>Bird</body>
      <herdAnimal>true</herdAnimal>
      <petness>0.15</petness>
      <baseBodySize>0.15</baseBodySize>
      <baseHungerRate>0.20</baseHungerRate>
      <leatherDef>Leather_Light</leatherDef>
      <baseHealthScale>0.30</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <trainability>Intermediate</trainability>
      <nameOnTameChance>0.4</nameOnTameChance>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <wildness>0.50</wildness>
      <nuzzleMtbHours>15</nuzzleMtbHours>
      <packAnimal>false</packAnimal>
      <wildBiomes>
        <SeaIce>0.003</SeaIce>
        <IceSheet>0.003</IceSheet>
        <Tundra>0.003</Tundra>
        <BorealForest>0.01</BorealForest>
        <TemperateForest>0.01</TemperateForest>
        <TropicalRainforest>0.01</TropicalRainforest>
        <AridShrubland>0.003</AridShrubland>
        <Desert>0.003</Desert>
        <ExtremeDesert>0.003</ExtremeDesert>
        <TemperateSwamp>0.01</TemperateSwamp>
        <ColdBog>0.01</ColdBog>
        <TropicalSwamp>0.01</TropicalSwamp>
      </wildBiomes>

      <gestationPeriodDays>12</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2.2, 1)</li>
          <li>(2.8, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>10</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.15</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.3</minAge>
        </li>
      </lifeStageAges>
          <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
          <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
          <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>

    </race>

    <comps>
      <li Class="CompProperties_Spawner">
        <thingToSpawn>AutumnFruit</thingToSpawn>
        <spawnCount>70</spawnCount>
        <spawnIntervalRange>
          <min>900000</min>
          <max>1200000</max>
        </spawnIntervalRange>
        <spawnMaxAdjacent>100</spawnMaxAdjacent>
        <spawnForbidden>false</spawnForbidden>
      </li>
    </comps>

    <tradeTags>
      <li>AnimalFarm</li>
      <li>AnimalPet</li>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>




  <PawnKindDef ParentName="AnimalKindBase">
    <defName>HalloweenBat</defName>
    <label>Halloween Bat</label>
    <race>HalloweenBat</race>
    <baseRecruitDifficulty>0.1</baseRecruitDifficulty>
    <canArriveManhunter>true</canArriveManhunter>
    <combatPower>30</combatPower>
    <ecoSystemWeight>0.20</ecoSystemWeight>
    <wildGroupSize>
      <min>1</min>
      <max>3</max>
    </wildGroupSize>
    <minGenerationAge>1</minGenerationAge>
    <maxGenerationAge>4</maxGenerationAge>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Bat/BatBaby</texPath>
          <drawSize>1.5</drawSize>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Bat/BatJuvenile</texPath>
          <drawSize>1.5</drawSize>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Bat/BatAdult</texPath>
          <drawSize>1.9</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>