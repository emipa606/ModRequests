<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <IncidentDef>
    <defName>MParmor_WreckageFall</defName>
	  <label>Mechframe wreckage crash</label>
	  <category>Misc</category>
    <targetTags>
      <li>Map_PlayerHome</li>
    </targetTags>
    <workerClass>MParmorLibrary.IncidentWorker_WreckageFall</workerClass>
    <baseChance>0</baseChance>
