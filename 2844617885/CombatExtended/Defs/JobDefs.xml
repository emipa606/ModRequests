<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<JobDef>
		<defName>XFMParmor_Job_GetIntoMParmor</defName>
		<driverClass>JobDriver_UseItem</driverClass>
		<reportString>entering mechframe</reportString>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
		<alwaysShowWeapon>true</alwaysShowWeapon>
		<joyDuration>120</joyDuration>
		<suspendable>false</suspendable>
	</JobDef>

	<JobDef>
		<defName>XFMParmor_Job_FillChargingStation</defName>
		<driverClass>MParmorLibrary.JobDriver_FillChargingStation</driverClass>
		<reportString>inserting battery into TargetA.</reportString>
		<suspendable>false</suspendable>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>
	<JobDef>
		<defName>XFMParmor_Job_TakeBattery</defName>
		<driverClass>MParmorLibrary.JobDriver_TakeBattery</driverClass>
		<reportString>retrieving battery from TargetA.</reportString>
		<suspendable>false</suspendable>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>

	<JobDef>
		<defName>XFMParmor_Job_ReturnToCarrier</defName>
		<driverClass>MParmorLibrary.JobDriver_ReturnToCarrier</driverClass>
		<reportString>returning to TargetA.</reportString>
		<suspendable>false</suspendable>
    <casualInterruptible>false</casualInterruptible>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>

	<JobDef>
		<defName>XFMParmor_Job_ReturnToPit</defName>
		<driverClass>MParmorLibrary.JobDriver_ReturnToPit</driverClass>
		<reportString>returning to bay</reportString>
		<suspendable>false</suspendable>
    <casualInterruptible>false</casualInterruptible>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>
</Defs>