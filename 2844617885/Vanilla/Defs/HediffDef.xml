<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>XFMParmor_Weariness</defName>
    <label>weariness symptom</label>
    <description>The side effect of replacing sleep with drugs, may affect ordinary jobs if allowed to worsen. Can only be cured by actual, real, geniue bed rest.</description>
    <makesSickThought>true</makesSickThought>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <compClass>MParmorLibrary.HediffComp_ImmunizableResetOnly</compClass>
        <severityPerDayNotImmune>-24</severityPerDayNotImmune>
        <immunityPerDayNotSick>6666</immunityPerDayNotSick>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <minSeverity>12</minSeverity>
        <statFactors>
          <WorkSpeedGlobal>0.4</WorkSpeedGlobal>
        </statFactors>
      </li>
    </stages>
    <defaultLabelColor>(0, 0.5, 0.85)</defaultLabelColor>
  </HediffDef>
</Defs>