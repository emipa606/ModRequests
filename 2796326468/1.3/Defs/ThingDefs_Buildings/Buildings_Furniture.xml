<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Banner Base -->
  <ThingDef ParentName="FurnitureWithQualityBase" Name="DankPyon_BannerBase" Abstract="True">
    <label>banner</label>
    <description>A banner to display the colony's colors. Gives mood bonus to anyone nearby.</description>
    <designationCategory>Furniture</designationCategory>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.25</fillPercent>
    <pathCost>0</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>750</WorkToBuild>
      <Mass>10</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>20</Beauty>
    </statBases>
  

    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>20</costStuffCount>
    <costList>
      <Cloth>40</Cloth>
    </costList>

    <holdsRoof>false</holdsRoof>
    <canOverlapZones>false</canOverlapZones>
    <rotatable>false</rotatable>
    <fertility>0</fertility>

    <graphicData>
      <drawSize>(2,2)</drawSize>
      <drawOffset>(0,0,0.2)</drawOffset>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.3, 0.5, 0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <uiIconScale>0.5</uiIconScale>
    
  </ThingDef>
  

  <!-- Actual Banners -->
  <ThingDef ParentName="DankPyon_BannerBase">
    <defName>DankPyon_BannerArrow</defName>
    <label>banner (arrow)</label>
     <graphicData>
      <texPath>Furniture/BannerArrow</texPath>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="DankPyon_BannerBase">
    <defName>DankPyon_BannerCrow</defName>
    <label>banner (crow)</label>
     <graphicData>
      <texPath>Furniture/BannerCrow</texPath>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="DankPyon_BannerBase">
    <defName>DankPyon_BannerGoldDragon</defName>
    <label>banner (gold dragon)</label>
     <graphicData>
      <texPath>Furniture/BannerGoldDragon</texPath>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="DankPyon_BannerBase">
    <defName>DankPyon_Banner7Daggers</defName>
    <label>banner (7 Daggers)</label>
     <graphicData>
      <texPath>Furniture/Banner7Daggers</texPath>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="DankPyon_BannerBase">
    <defName>DankPyon_BannerHand</defName>
    <label>banner (hand)</label>
     <graphicData>
      <texPath>Furniture/BannerHand</texPath>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="DankPyon_BannerBase">
    <defName>DankPyon_BannerReaper</defName>
    <label>banner (reaper)</label>
     <graphicData>
