<Defs>


  <ThingDef ParentName="AnimalThingBase" ADogSaidBody="LegsTail">
    <defName>XenSpiritWolf</defName>
    <label>spirit wolf</label>
    <description>The spirit wolf is said to be a forest spirit, or ancestral wolf guardian. A truly formidable creature, whatever it's origins.</description>
    <statBases>
      <MoveSpeed>5.10</MoveSpeed>
      <ComfyTemperatureMin>-85</ComfyTemperatureMin>
      <MarketValue>1250</MarketValue>
    </statBases>
 <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>18</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>18</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>fangs</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>22</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.9</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>

    <race>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <predator>true</predator>
      <petness>0.75</petness>
      <baseBodySize>3.0</baseBodySize>
      <baseHungerRate>1.25</baseHungerRate>
      <baseHealthScale>13.15</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
	  <wildBiomes>
			<Tundra>0.12</Tundra>
			<IceSheet>0.08</IceSheet>
			<SeaIce>0.025</SeaIce>
			<TropicalRainforest>0.065</TropicalRainforest>
			<TemperateForest>0.08</TemperateForest>
			<BorealForest>0.10</BorealForest>
			<AridShrubland>0.08</AridShrubland>
			<Desert>0.08</Desert>
			<ExtremeDesert>0.025</ExtremeDesert>
      <TropicalSwamp>0.15</TropicalSwamp>
      <ColdBog>0.1</ColdBog>
      <TemperateSwamp>0.15</TemperateSwamp>
    </wildBiomes>
      <leatherDef>Leather_Wolf</leatherDef>
      <useMeatFrom>Wolf_Timber</useMeatFrom>
      <gestationPeriodDays>30</gestationPeriodDays>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
      <wildness>0.95</wildness>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0.025</manhunterOnTameFailChance>
      <nuzzleMtbHours>120</nuzzleMtbHours>
	  <packAnimal>true</packAnimal>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(3, 0.7)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>150</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.25</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.8</minAge>
          <soundWounded>Pawn_Dog_Injured</soundWounded>
          <soundDeath>Pawn_Dog_Death</soundDeath>
          <soundCall>Pawn_Dog_Call</soundCall>
          <soundAngry>Pawn_Dog_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalExotic</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>


