<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- If any of these matches, i'm just gonna assume you have a mod that does balancing better. -->
			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="Plant_Strawberry"]/plant/harvestAfterGrowth</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Plant_Strawberry"]/plant</xpath>
					<value>
						<harvestAfterGrowth>0.30</harvestAfterGrowth>
					</value>
				</nomatch>
			</li>
			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="Plant_Cotton"]/plant/harvestAfterGrowth</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Plant_Cotton"]/plant</xpath>
					<value>
						<harvestAfterGrowth>0.30</harvestAfterGrowth>
					</value>
				</nomatch>
			</li>
			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="Plant_Hops"]/plant/harvestAfterGrowth</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Plant_Hops"]/plant</xpath>
					<value>
						<harvestAfterGrowth>0.30</harvestAfterGrowth>
					</value>
				</nomatch>
			</li>
			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="Plant_TreeCocoa"]/plant/harvestAfterGrowth</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Plant_TreeCocoa"]/plant</xpath>
					<value>
						<harvestAfterGrowth>0.30</harvestAfterGrowth>
					</value>
				</nomatch>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Plant_Strawberry"]/plant/growDays</xpath>
				<value>
					<growDays>8</growDays>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Plant_Cotton"]/plant/growDays</xpath>
				<value>
					<growDays>10</growDays>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Plant_Hops"]/plant/growDays</xpath>
				<value>
					<growDays>7</growDays>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Plant_TreeCocoa"]/plant/growDays</xpath>
				<value>
					<growDays>21</growDays>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>