	<!--========== Coldrage Dagger ==========-->

	<ThingDef ParentName="WoW_HighElfT1_BaseWeapon">
		<defName>WoWM_HighElf_Dagger</defName>
		<label>silver covenant dagger</label>
		<description>Silver covenant dagger</description>
		<graphicData>
			<texPath>Things/Item/Weapons/HighElf/Melee/Coldrage Dagger</texPath>
			<drawSize>.7</drawSize>
		</graphicData>
		<comps>
            <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
				<!--===== X,(Z?),Y =====-->
				<southOffset>(-0.1,0,0.2)</southOffset>
				<northOffset>(-0.1,0,0.2)</northOffset>
				<eastOffset>(0.1,0,0.2)</eastOffset>
				<westOffset>(-0.1,0,0.2)</westOffset>
           </li>
        </comps>
		<weaponTags>
			<li>WoW_Melee_HighElfT1</li>
		</weaponTags>
		<statBases>
			<Mass>1.6</Mass>
			<MarketValue>250</MarketValue>
		</statBases>
		<equippedAngleOffset>-30</equippedAngleOffset>
		<tools>
			<li>
				<label>blade</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>10</power>
				<cooldownTime>1.4</cooldownTime>
				<armorPenetration>0.05</armorPenetration>
			</li>
			<li>
				<label>point</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>14</power>
				<cooldownTime>1.4</cooldownTime>
				<armorPenetration>0.05</armorPenetration>
			</li>
		</tools>
		<costStuffCount>25</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
	</ThingDef>

