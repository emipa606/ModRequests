<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ResearchProjectDef>
        <defName>Artemiish_PotionRefining</defName>
        <label>potion refining</label>
        <description>Refine potions so they can be safely injected into the blood stream.</description>
		<tab>VCE_Brewing</tab>
        <baseCost>600</baseCost>
        <techLevel>Industrial</techLevel>
        <researchViewX>2</researchViewX>
        <researchViewY>0</researchViewY>
		<prerequisites>
			<li>Artemiish_PotionBrewing</li>
			<li>MedicineProduction</li>
		</prerequisites>
        <generalRules>
            <rulesStrings>
                <li>subject->the refinement of medicine</li>
                <li>subject_gerund->creating combat ready drugs</li>
            </rulesStrings>
        </generalRules>
    </ResearchProjectDef>
	
    <ResearchProjectDef>
        <defName>Artemiish_PotionBrewing</defName>
        <label>potion brewing</label>
        <description>Build a potion lab for basic potion mixing.</description>
		<tab>VCE_Brewing</tab>
        <baseCost>500</baseCost>
        <techLevel>Medieval</techLevel>
        <researchViewX>1</researchViewX>
        <researchViewY>0</researchViewY>
		<prerequisites>
			<li>VBE_LiquorBrewing</li>
		</prerequisites>
        <generalRules>
            <rulesStrings>
                <li>subject->the mixing of medicine</li>
				<li>subject_story->extracted the medicinal properties of spirits, creating mixtures capable of healing and strenghening</li>
				<li>subject_story->developed ways of creating shelf-stable and travel-safe potions</li>
                <li>subject_gerund->distilling nature into bottles</li>
            </rulesStrings>
        </generalRules>
    </ResearchProjectDef>

	<ThingDef ParentName="BenchBase">
		<defName>Artemiish_PotionLab</defName>
		<label>potion lab</label>
		<description>A work bench equipped with everything necessary for the preparation of potions.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>ArtemiishThings/Structures/PotionLab</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2.5,2.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<costStuffCount>40</costStuffCount>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costList>
			<Steel>60</Steel>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>3500</WorkToBuild>
			<MaxHitPoints>120</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(2,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(1,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<paintable>true</paintable>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>Artemiish_PotionBrewing</li>
		</researchPrerequisites>
	</ThingDef>

	<WorkGiverDef>
		<defName>Artemiish_DoBillsProducePotions</defName>
		<label>brew potions</label>
		<giverClass>WorkGiver_DoBill</giverClass>
		<workType>Crafting</workType>
		<workTags>
			<li>Intellectual</li>
		</workTags>
		<priorityInType>95</priorityInType>
		<fixedBillGiverDefs>
			<li>Artemiish_PotionLab</li>
		</fixedBillGiverDefs>
		<verb>produce potions</verb>
		<gerund>producing potions at</gerund>
		<requiredCapacities>
			<li>Manipulation</li>
		</requiredCapacities>
		<prioritizeSustains>true</prioritizeSustains>
	</WorkGiverDef>

</Defs>