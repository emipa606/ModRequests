<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="MealBaseIngredientless" Name="PotionBase" Abstract="True">
		<tradeability>Buyable</tradeability>
		<comps>
			<li Class="CompProperties_Ingredients">
				<splitTransferableFoodKind>true</splitTransferableFoodKind>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="PotionBase">
		<defName>Artemiish_SimplePotion</defName>
		<label>simple potion</label>
		<description>A simple potion quickly mixed from two ingredients.</description>
		<thingClass>VanillaCookingExpanded.GourmetMeal</thingClass>
		<graphicData>
			<texPath>ArtemiishThings/Items/Drinks/PotionSimple</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<statBases>
			<MarketValue>10</MarketValue>
			<WorkToMake>150</WorkToMake>
			<Nutrition>0.25</Nutrition>
			<Mass>0.3</Mass>
		</statBases>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<tasteThought>Artemiish_PotionThought</tasteThought>
			<nurseable>true</nurseable>
			<drugCategory>Hard</drugCategory>
			<ingestSound>Ingest_Drink</ingestSound>
			<ingestHoldUsesTable>false</ingestHoldUsesTable>
			<baseIngestTicks>100</baseIngestTicks>
            <chairSearchRadius>0</chairSearchRadius>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>AlcoholHigh</hediffDef>
					<severity>0.3</severity>
					<toleranceChemical>Alcohol</toleranceChemical>
				</li>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>AlcoholTolerance</hediffDef>
					<severity>0.016</severity>
					<divideByBodySize>true</divideByBodySize>
					<multiplyByGeneToleranceFactors>true</multiplyByGeneToleranceFactors>
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Drug">
				<chemical>Alcohol</chemical>
				<addictiveness>0.010</addictiveness>
				<minToleranceToAddict>0.25</minToleranceToAddict>
				<existingAddictionSeverityOffset>0.20</existingAddictionSeverityOffset>
				<needLevelOffset>0.9</needLevelOffset>
				<listOrder>10</listOrder>
			</li>
		</comps>
	</ThingDef>
	
