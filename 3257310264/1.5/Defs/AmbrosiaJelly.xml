<?xml version="1.0" encoding="utf-8" ?>
<Defs>  


	<ThingDef ParentName="RoughPlantBase">
		<defName>Artemiish_AmbrosiaJelly</defName>
		<label>ambrosia jelly</label>
		<description>Known as edible gold, this preserve is made by crushing ambrosia, then heating with water and sugar and finally filtering out the pulp. This jelly has powerful healing properties, almost seeming magical.</description>
		<graphicData>
			<texPath>ArtemiishThings/Items/Condiments/AmbrosiaJelly</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>175</MarketValue>
			<Nutrition>0</Nutrition>
			<Flammability>0.6</Flammability>
		</statBases>
		<thingCategories>
			<li>VCE_Condiments</li>
		</thingCategories>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<specialThoughtAsIngredient>Artemiish_CosumedAmbrosiaJelly</specialThoughtAsIngredient>
			<optimalityOffsetFeedingAnimals>-50</optimalityOffsetFeedingAnimals>
		</ingestible>
		<ingredient>
		  <mergeCompatibilityTags>
			<li>Condiments</li>
		  </mergeCompatibilityTags>
		</ingredient>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>120</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<modExtensions>
			<li Class="AnimalBehaviours.AnimalStatExtension">
				<statToAdd>
					<li>VCE_CondimentEffects</li>
				</statToAdd>
				<statValues>
					<li>VCE_CondimentEffectsTitle</li>
				</statValues>
				<statDescriptions>
					<li>Artemiish_CondimentEffectsAmbrosia</li>
				</statDescriptions>
			</li>
		</modExtensions>
	</ThingDef>

	<HediffDef>
		<defName>Artemiish_CosumedAmbrosiaJelly</defName>
		<label>consumed ambrosia jelly (from meal)</label>
		<makesSickThought>false</makesSickThought>
		<description>Ambrosia jelly is a translucent fruit spread. It has great restorative effects.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>Artemiish_CosumedAmbrosiaJelly</li>
				</thoughtDefs>
			</li>
		</comps>
      <stages>
			<li>
				<naturalHealingFactor>3</naturalHealingFactor>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.35</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.30</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>0.15</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<ThoughtDef>
		<thoughtClass>VanillaCookingExpanded.Thought_Hediff</thoughtClass>
		<hediff>Artemiish_CosumedAmbrosiaJelly</hediff>
		<defName>Artemiish_CosumedAmbrosiaJelly</defName>
		<durationDays>0.5</durationDays>
		<stages>
			<li>
				<label>consumed ambrosia jelly</label>
				<description>Beautiful and exquisite.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<RecipeDef>
		<defName>Artemiish_AmbrosiaJellyRecipe</defName>
		<label>make ambrosia jelly</label>
		<description>Heat ambrosia with sugar until it sets.</description>
		<jobString>Making ambrosia jelly.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>250</workAmount>
		<recipeUsers>
			<li>VCE_CondimentPrepTable</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Ambrosia</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Ambrosia</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Artemiish_AmbrosiaJelly>1</Artemiish_AmbrosiaJelly>
		</products>
		<researchPrerequisite>VCE_CondimentsResearch</researchPrerequisite>
	</RecipeDef>
	
</Defs>