<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="VCE_CondimentArtifactBase">
		<defName>Artemiish_DigestibleHealerNanites</defName>
		<label>digestible healer nanites</label>
		<description>A concoction filled with nanites, capable of healing all injuries in an instant. The technology seems almost impossible.</description>
		<graphicData>
			<texPath>ArtemiishThings/Items/Condiments/DigestibleHealerNanites</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<stackLimit>10</stackLimit>
		<tradeNeverStack>true</tradeNeverStack>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Mass>3</Mass>
			<Beauty>-2</Beauty>
			<Nutrition>0</Nutrition>
			<Flammability>0.4</Flammability>
			<MarketValue>800</MarketValue>
			<MaxHitPoints>80</MaxHitPoints>
		</statBases>
		<thingCategories Inherit="False">
			<li>VCE_Condiments</li>
		</thingCategories>
		<tradeTags Inherit="False">
			<li>Artifact</li>
		</tradeTags>
		<thingSetMakerTags Inherit="False">
			<li>RewardSpecial</li>
		</thingSetMakerTags>
		<ingestible>
			<foodType>Plant</foodType>
			<preferability>NeverForNutrition</preferability>
			<specialThoughtAsIngredient>Artemiish_ConsumedDigestibleHealerNanites</specialThoughtAsIngredient>
			<optimalityOffsetFeedingAnimals>-50</optimalityOffsetFeedingAnimals>
		</ingestible>
		<ingredient>
			<mergeCompatibilityTags>
				<li>Condiments</li>
			</mergeCompatibilityTags>
		</ingredient>
		<modExtensions>
			<li Class="AnimalBehaviours.AnimalStatExtension">
				<statToAdd>
					<li>VCE_CondimentEffects</li>
				</statToAdd>
				<statValues>
					<li>VCE_CondimentEffectsTitle</li>
				</statValues>
				<statDescriptions>
					<li>Artemiish_CondimentEffectsHealerNanites</li>
				</statDescriptions>
			</li>
		</modExtensions>
	</ThingDef>

	<HediffDef>
		<defName>Artemiish_ConsumedDigestibleHealerNanites</defName>
		<label>consumed healer nanites (from meal)</label>
		<makesSickThought>false</makesSickThought>
		<description>Healer nanites will remove all injuries.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>Artemiish_ConsumedDigestibleHealerNanites</li>
				</thoughtDefs>
			</li>
			<li Class="PotionEffects.HediffCompProperties_HealInjuries"/>
		</comps>
	</HediffDef>

	<ThoughtDef>
		<thoughtClass>VanillaCookingExpanded.Thought_Hediff</thoughtClass>
		<hediff>Artemiish_ConsumedDigestibleHealerNanites</hediff>
		<defName>Artemiish_ConsumedDigestibleHealerNanites</defName>
		<durationDays>0.001</durationDays>
		<stages>
			<li>
				<label>consumed healer nanites</label>
				<description>My wounds are gone!</description>
				<baseMoodEffect>0</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>