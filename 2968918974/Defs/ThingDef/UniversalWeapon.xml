<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <!--空战电荷离子束-->
  <ThingDef ParentName="BaseGunWithQuality">
    <defName>MYDE_Mech_Mosquito_Lance</defName>
    <label>lightweight charge lance</label>
    <description>lightweight charge lance.</description>
    <graphicData>
      <texPath>Empty/Empty</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
	<tradeability>None</tradeability>
	<destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
    <weaponTags>
      <li>Mech_Mosquito</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <statBases>
      <Mass>10</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>1</AccuracyMedium>
      <AccuracyLong>1</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
    </statBases>
	<tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ChargeLance_Air</defaultProjectile>
        <warmupTime>3.1</warmupTime>
        <range>49.9</range>
        <soundCast>ChargeLance_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
		<requireLineOfSight>false</requireLineOfSight>
      </li>
    </verbs>
    <smeltable>false</smeltable>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_ChargeLance_Air</defName>
    <label>charge lance shot</label>
	<!-- <thingClass>GD_AF.Projectile_ChargeLanceAir</thingClass> -->
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>1.5</drawSize>
    </graphicData>
    <projectile>
	  <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>40</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <speed>120</speed>
    </projectile>
  </ThingDef>
  
</Defs>