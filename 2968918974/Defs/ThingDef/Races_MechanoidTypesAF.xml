<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- 机械伊蚊 -->
  
  <ThingDef ParentName="BaseMechanoid">
    <defName>Mech_Mosquito</defName>
    <label>mosquito</label>
    <description>The mosquito is a light and small mechanoid capable of maneuvering through the air at very high speeds and launching strikes against targets. \n\nIn addition to using the on-board lightweight charge lance to snipe targets, the monomolecular blades mounted on the sides of its body also provide it with the ability to dive and harvest enemies' heads. This tough guy often out in clusters, and the swarm of obscured aircraft will put the air control firmly in the hands of the Mechanoid Hive.</description>
    <statBases>
      <MoveSpeed>3.1</MoveSpeed>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.73</ArmorRating_Sharp>
      <PsychicSensitivity>0</PsychicSensitivity>
	  <IncomingDamageFactor>0.5</IncomingDamageFactor>
	  <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">9999</BandwidthCost>
    </statBases>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
	<damageMultipliers>
      <li>
        <damageDef>EMP</damageDef>
        <multiplier>0.8</multiplier>
      </li>
	  <li>
        <damageDef>Stun</damageDef>
        <multiplier>0</multiplier>
      </li>
    </damageMultipliers>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <body>Firefly</body>
      <baseBodySize>0.9</baseBodySize>
      <baseHealthScale>1.0</baseHealthScale>
	  <hediffGiverSets>
        <!-- <li>CataphractCentipede_Boot</li> -->
	  </hediffGiverSets>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
          <soundCall>Pawn_Mech_Centipede_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>1000~2000</soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
    </race>
	<comps>
      <li Class="GD_AF.CompProperties_SummonCraft">
        <SpawnDef>AF_FWCraft_Mech_Mosquito</SpawnDef>
        <SpawnNum>1</SpawnNum>
		<distance>39.9</distance>
        <SpawnRadius>0.5</SpawnRadius>
        <If_DefaultFollow>False</If_DefaultFollow>
        <If_AutoSelectAfterSpawn>True</If_AutoSelectAfterSpawn>
      </li>
    </comps>
	<butcherProducts>
      <Steel>35</Steel>
	  <Plasteel>12</Plasteel>
    </butcherProducts>
  </ThingDef>

  <PawnKindDef ParentName="BaseMechanoidKind">
    <defName>Mech_Mosquito</defName>
    <label>mosquito</label>
    <combatPower>350</combatPower>
    <weaponMoney>9999~9999</weaponMoney>
    <weaponTags>
      <!-- <li>Mech_Mosquito</li> -->
    </weaponTags>
	<race>Mech_Mosquito</race>
    <lifeStages>
	  <li>
        <bodyGraphicData>
          <texPath>MechMosquito</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

</Defs>