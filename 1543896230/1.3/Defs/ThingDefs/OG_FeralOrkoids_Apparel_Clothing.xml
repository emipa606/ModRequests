<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ========================= Ork - Apparel ========================== -->	
  <!-- ========================= Ork - Shirt ========================== -->
  <ThingDef ParentName="OGOApparelMakeableBase">
    <defName>OGO_Apparel_UniformShirt</defName>
    <label>ork undershirt</label>
    <description>A simple shirt worn by the orks.</description>
    <graphicData>
      <texPath>Things/Item/Apparel/Ork/Shirt/OrkShirt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <MarketValue>100</MarketValue>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<generateCommonality>1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/Ork/Shirt/OrkShirt</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
      <li>OGOClothing</li>
      <li>OGOUniform</li>
      </tags>
      <defaultOutfitTags>
      <li>Any</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
    </comps>
  </ThingDef>

  <!-- ========================= Ork - Jacket ========================== -->  
 <ThingDef ParentName="OGOApparelMakeableBase">
    <defName>OGO_Apparel_UniformJacket</defName>
    <description>The official coat of the orks.</description>
    <label>ork jacket</label>
    <graphicData>
      <texPath>Things/Item/Apparel/Ork/Jacket/OrkJacket</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>600</MarketValue>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToMake>15000</WorkToMake>
      <Mass>1.7</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.07</ArmorRating_Sharp>
      <ArmorRating_Heat>0.1</ArmorRating_Heat>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.04</MoveSpeed>
    </equippedStatOffsets>
	<generateCommonality>2</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/Ork/Jacket/OrkJacket</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
			<li>OGOClothing</li>
			<li>OGOUniform</li>
			<li>OGOJacket</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>RGBA(1.00,1.00,1.00,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

</Defs>