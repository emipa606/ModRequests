      <Mass>7.25</Mass>
      <Flammability>0</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>10</EquipDelay>
    </statBases>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
		<recipeMaker>
			<researchPrerequisite>OrkishEavyArmour</researchPrerequisite>
		</recipeMaker>
	<generateCommonality>1</generateCommonality>
    <apparel>
      <bodyPartGroups>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Orks/OrkEavyArmour/OrkEavyArmour</wornGraphicPath>
      <layers>
        <li>Middle</li>
