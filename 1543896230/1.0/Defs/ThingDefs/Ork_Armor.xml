      <tags>
        <li>OrkHeavy</li>
      </tags>
      <defaultOutfitTags>
        <li>OrkSoldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1.00,1.00,1.00,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  
  
