<Defs>
  <FactionDef ParentName="PlayerFactionBase" Name="OG_Ork_Feral_PlayerFactionBase">
    <defName>OG_Ork_PlayerTribe</defName>
    <label>Ork Tribal</label>
    <description>Ork Tribal Start.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>Tribesperson_OG_Ork</basicMemberKind>
    <pawnsPlural>colonists</pawnsPlural>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
	<factionNameMaker>OG_NamerFaction_Ork</factionNameMaker>
    <settlementNameMaker>OG_NamerBases_Ork</settlementNameMaker>
    <techLevel>Neolithic</techLevel>
		<backstoryFilters>
			<li>
			<categories>
				<li>Tribal</li>
			</categories>
			</li>
		</backstoryFilters>
    <settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
    <factionIconPath>Icons/Ork/Icon_OrkB</factionIconPath>
    <startingResearchTags>
      <li>TribalStart</li>
      <li>TribalStart_Ork</li>
    </startingResearchTags>
    <startingTechprintsResearchTags>
      <li>TribalStart</li>
      <li>TribalStartTechprints</li>
    </startingTechprintsResearchTags>
    <hairTags>
		<li>OG_Ork_Hair</li>
		<li>OG_Grot_Hair</li>
    </hairTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
        <li>Leather_Plain</li>
        <li>Leather_Squig</li>
        <li>Leather_Human</li>
      </thingDefs>
    </apparelStuffFilter>
    <colorSpectrum>
      <li>(0, 0.437, 0.847)</li>
    </colorSpectrum>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
		<li>
        <kindDef>Peaceful</kindDef>
        <commonality>100</commonality>
        <options>
          <Tribesperson_OG_Grot>100</Tribesperson_OG_Grot>
          <Tribesperson_OG_Ork_Boy>100</Tribesperson_OG_Ork_Boy>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>

