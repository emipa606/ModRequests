<?xml version="1.0" encoding="utf-8"?>

<Patch>
 
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Cooking Expanded - Stews</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<!-- StewSimple -->
			
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewSimple"]/graphicData/texPath</xpath>
					<value>
						<texPath>RusticMeal/Patches/VCE_StewSimple</texPath>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewSimple"]/graphicData/graphicClass</xpath>
					<value>
						<graphicClass>Graphic_StackCount</graphicClass>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewSimple"]/graphicData</xpath>
					<value>
						<drawRotated>false</drawRotated>
					</value>
				</li>

			<!-- StewFine -->
			
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewFine"]/graphicData/texPath</xpath>
					<value>
						<texPath>RusticMeal/Patches/VCE_StewFine</texPath>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewFine"]/graphicData/graphicClass</xpath>
					<value>
						<graphicClass>Graphic_StackCount</graphicClass>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewFine"]/graphicData</xpath>
					<value>
						<drawRotated>false</drawRotated>
					</value>
				</li>

			<!-- BakeLavish -->
			
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewLavish"]/graphicData/texPath</xpath>
					<value>
						<texPath>RusticMeal/Patches/VCE_StewLavish</texPath>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewLavish"]/graphicData/graphicClass</xpath>
					<value>
						<graphicClass>Graphic_StackCount</graphicClass>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="VCE_CookedStewLavish"]/graphicData</xpath>
					<value>
						<drawRotated>false</drawRotated>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
 
</Patch>
