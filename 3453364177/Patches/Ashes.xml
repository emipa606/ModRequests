<?xml version="1.0" encoding="utf-8"?>

<Patch>

 	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ashes</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<!-- AshMeal -->
			
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Romy_MealAsh"]/graphicData/texPath</xpath>
					<value>
						<texPath>RusticMeal/Patches/Ashes/AshMeal</texPath>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Romy_MealAsh"]/graphicData/graphicClass</xpath>
					<value>
						<graphicClass>Graphic_StackCount</graphicClass>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Romy_MealAsh"]/graphicData</xpath>
					<value>
						<drawRotated>false</drawRotated>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>
