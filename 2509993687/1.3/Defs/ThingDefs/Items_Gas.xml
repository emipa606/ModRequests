<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="ResourceBase">
    <defName>ChemGas</defName>
    <label>Chem-Gas</label>
    <description>It is a hydrocarbon compound, and is the most plentiful high-performance fuel in the galaxy.</description>
		<tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Resource/ChemGas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>500</stackLimit>
	<statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>0.33</MarketValue>
      <Mass>0.05</Mass>
      <Flammability>1.0</Flammability>
			<DeteriorationRate>1.0</DeteriorationRate>
		</statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>2</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveExpandPerStackcount>0.033</explosiveExpandPerStackcount>
				<startWickHitPointsPercent>0.333</startWickHitPointsPercent>
				<wickTicks>
					<min>70</min>
					<max>150</max>
				</wickTicks>
			</li>
		</comps>
  </ThingDef>
 
  <RecipeDef>
    <defName>MakeChemGas</defName>
    <label>Refine 100U Chem-Gas</label>
    <description>Refine 100U Chem-Gas</description>
    <jobString>Refining</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1200</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>						
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Uranium</li>
        <li>Chemfuel</li>		
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ChemGas>100</ChemGas>
    </products>
    <workSkill>Crafting</workSkill>
	<recipeUsers>
		<li>BiofuelRefinery</li>
	</recipeUsers>
    <researchPrerequisites><li>Research_ChemGas</li></researchPrerequisites>
  </RecipeDef>
</Defs>
 
