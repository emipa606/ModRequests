<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!--============================== Couch ==============================-->
	
  <ThingDef ParentName="ArtableFurnitureBase">
    <defName>Couch</defName>
    <label>therapy couch</label>
    <description>A partially upholstered kind of bench, comfy enough to relax but not to fall asleep.</description>
    <thingClass>Therapy.Building_Couch</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Couch/Couch</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,4)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>2</Beauty>
      <WorkToBuild>2000</WorkToBuild>
      <Mass>60</Mass>
      <Comfort>0.7</Comfort>
    </statBases>
    <size>(1,2)</size>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
	<placeWorkers>
      <li>Therapy.PlaceWorker_Couch</li>
    </placeWorkers>
	<stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>140</costStuffCount>
    <comps>
        <li Class="CompProperties_Forbiddable" />
		<li Class="CompProperties_RoomIdentifier">
			<roomStat>Impressiveness</roomStat>
		</li>
    </comps>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <techLevel>Industrial</techLevel>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <passability>PassThroughOnly</passability>
    <drawGUIOverlay>false</drawGUIOverlay>
    <canOverlapZones>false</canOverlapZones>
    <uiIconScale>0.90</uiIconScale>
  </ThingDef>



</Defs>