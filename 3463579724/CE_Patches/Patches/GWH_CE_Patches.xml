<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<!-- Material Thickness (All values +3mm to adjust for balancing of 4mm simple helmet-->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GreatWarHelmetBaseAdrian"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>3.7</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="GWH_Adrian_Browplate"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>7.7</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GreatWarHelmetBaseStahlhelm"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>4.2</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="GWH_M1897_Pickelhaube" or defName="GWH_Snowgoggles" or @Name="GreatWarHelmetBaseStahlhelmStirnpanzer"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>8.2</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GreatWarHelmetBaseBrodie" or defName="GWH_Tanker_Mask"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>3.9</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="GWH_Farina" or defName="GWH_Stirnpanzer"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>7.0</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="GWH_Gaede" or defName="GWH_Sappenpanzer_Gesichtsmaske"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>9.0</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="GWH_skullcap"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>3.5</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="GWH_Corazze_Farina"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>8.0</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="GWH_Sappenpanzer"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>12.0</StuffEffectMultiplierArmor>
		</value>
	</Operation>
	
	<!-- Bulk -->
	
	<!-- wieldy Helmet-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="GWH_M15_Adrian" or defName="GWH_Brodie_B" or defName="GWH_Mk1_Brodie" or defName="GWH_Gaede" or defName="GWH_M1897_Pickelhaube" or defName="GWH_Shovelsteel"]/statBases</xpath>
		<value>
			<Bulk>2</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>
	<!-- less wieldy Helmet-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="GWH_Adrian_Polack" or defName="GWH_Berndorfer" or defName="GWH_Farina" or defName="GWH_M1917_Stahlhelm" or defName="GWH_M1917_Visorless" or defName="GWH_M1918_Stahlhelm"]/statBases</xpath>
		<value>
			<Bulk>3</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>
	<!-- unwieldy Helmet -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="GWH_Adrian_Browplate" or defName="GWH_Berndorfer_Stirnpanzer" or defName="GWH_M1917_Stirnpanzer" or defName="GWH_Sappenpanzer_Gesichtsmaske"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>2</WornBulk>
		</value>
	</Operation>
	<!-- armor -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="GWH_Corazze_Farina"]/statBases</xpath>
		<value>
			<Bulk>8</Bulk>
			<WornBulk>4</WornBulk>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="GWH_Sappenpanzer"]/statBases</xpath>
		<value>
			<Bulk>12</Bulk>
			<WornBulk>5</WornBulk>
		</value>
	</Operation>
</Patch>
