<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!--__________ Shell __________-->

 <!-- German Trench Coat -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_WWI_GermanTrenchCoat</defName>
    <label>Imperial German Trench Coat</label>
    <description>A trench coat worn by the highest and the lowest ranking of soldiers in the Kaiser Reich.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_WWI_Early_War</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Display/GermanTrenchCoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <costStuffCount>80</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
      </stuffCategories>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.00</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.1</SocialImpact>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>			
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Shoulders</li>
      </bodyPartGroups>
        <wornGraphicPath>Things/Shell/GermanTrenchCoat</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>WWIGermanUniforms</li>
		<li>WWIGermanCoat</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
</Defs>