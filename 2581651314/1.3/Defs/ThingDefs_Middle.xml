<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!--__________ Middle __________-->

 <!-- Trench Armor -->

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>ODZ_WWI_TrenchArmor</defName>
    <label>Imperial German Trench Armor</label>
    <description>Nicknamed "Lobster armor" this is worn by German sentry's and machinegunners.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>ODZ_WWI_Late_War</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Display/TrenchArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	 	  
      <drawSize>1.00</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>6.8</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.20</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.28</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.20</MoveSpeed>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
	  <MedicalTendSpeed>0.5</MedicalTendSpeed>	  
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>30</Cloth>
      <Steel>75</Steel>
    </costList>	
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>		
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Middle/TrenchArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>WWIGermanUniforms</li>
		<li>WWIGermanArmor</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>