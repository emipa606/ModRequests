	<!-- M17 Gasmask -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ODZ_WWI_M17Gasmask</defName>
    <label>German M17 Gasmask</label>
    <description>A standalone Gas mask that will save your life in the case of a toxic attack.</description>
    <graphicData>
      <texPath>Things/Display/M17Gasmask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
    </graphicData>
    <uiIconScale>1.00</uiIconScale>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Steel>8</Steel>
		</costList>	
    <statBases>
			<WorkToMake>1000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.09</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.2</EquipDelay>
    </statBases>
		<equippedStatOffsets>
			<ToxicSensitivity>-0.50</ToxicSensitivity>
		</equippedStatOffsets>	
    <recipeMaker>
      <researchPrerequisite>ODZ_WWI_Early_War</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>	  
    </recipeMaker>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>	
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headgear/M17Gasmask</wornGraphicPath>
			<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>	  
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
				<li>WWIGermanUniform</li>
				<li>WWIGermanHats</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>





