<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!--__________ Webbing __________-->
  
  
  
      <!-- Holster  -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_WWI_OfficerHolster</defName>
    <description>A Belt with a mauser holster worn by German officers.</description>
    <label>Imperial Officer Holster</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_WWI_Early_War</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Display/Holster</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.00</drawSize>
    </graphicData>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
      <Steel>2</Steel>
    </costList>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>600</WorkToMake>
      <Mass>0.5</Mass> 
	  <Flammability>0.25</Flammability>
      <StuffEffectMultiplierArmor>0.20</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
	  <CarryingCapacity>5</CarryingCapacity>
	  <MedicalTendSpeed>0.05</MedicalTendSpeed>
    </equippedStatOffsets>
    <apparel>
	<useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Belt/Holster</wornGraphicPath>
	  <wornGraphicData>
      </wornGraphicData>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>WWIGermanUniform</li>
		<li>WWIGermanOfficerWebbing</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <min>(97, 113, 51)</min>
          <max>(85, 100, 45)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>  
  
  
  
