<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!--__________ Onskin ____________-->


 <!-- PO10 German Uniform -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ODZ_WWI_PO10GermanUniform</defName>
    <description>An imperial line infantry uniform with red piping belonging to the many men of the German army.</description>
    <label>Imperial German Infantry Uniform</label>
    <recipeMaker>
      <researchPrerequisite>ODZ_WWI_Early_War</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Display/PO10GermanUniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>	  
    </graphicData>
      <costStuffCount>80</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
      </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>3700</WorkToMake>
      <Mass>0.3</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.46</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
<useWornGraphicMask>true</useWornGraphicMask>		
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Onskin/PO10GermanUniform</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>WWIGermanUniforms</li>
		        <li>WWIGermanInfantry</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>


