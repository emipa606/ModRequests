<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!--==================== Thorium ====================-->
	
	<ThingDef ParentName="RockBase">
		<defName>WoW_thorium_deposit</defName>
		<label>thorium deposit</label>
		<description>A vein of thorium ore.</description>
		<graphicData>
			<texPath>Things/Object/Structure/RockFlecked_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(114,139,125)</color>
			<colorTwo>(86,196,137)</colorTwo>
		</graphicData>
		<statBases>
			<Beauty>-1</Beauty>
			<MaxHitPoints>1800</MaxHitPoints>
		</statBases>
		<building>
			<isResourceRock>true</isResourceRock>
			<mineableThing>WoW_thorium_ore</mineableThing>
			<mineableYield>40</mineableYield>
			<mineableScatterCommonality>0.1</mineableScatterCommonality>
			<mineableScatterLumpSizeRange>
				<min>10</min>
				<max>20</max>
			</mineableScatterLumpSizeRange>
		</building>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(86,196,137,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
	
