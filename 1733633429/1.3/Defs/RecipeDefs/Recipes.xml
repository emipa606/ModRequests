<Defs>

	<RecipeDef Name="WoW_Metal_Refining" Abstract="True">
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<recipeUsers>
			<li>ElectricSmelter</li>
			<li>WoW_Forge</li>
		</recipeUsers>
	</RecipeDef>


	<!--============================== Thorium Refining ==============================-->


	<RecipeDef ParentName="WoW_Metal_Refining">
		<defName>WoW_refine_thorium</defName>
		<label>smelt thorium ingots from ore</label>
		<description>Refine 2 thorium ore into 1 thorium ingot</description>
		<jobString>Smelting thorium.</jobString>
		<workAmount>400</workAmount>
		<workSkill>Crafting</workSkill>
		<skillRequirements>
		<Crafting>14</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoW_thorium_ore</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<WoW_thorium>1</WoW_thorium>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoW_thorium_ore</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
	
