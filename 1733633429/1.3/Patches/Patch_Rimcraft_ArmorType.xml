<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Rimcraft</li>
        </mods>
        <match Class="PatchOperationSequence">
        <operations>
			<li Class="PatchOperationAdd">
		        <xpath>/Defs/FactionDef[defName = "Alliance"]/apparelStuffFilter/thingDefs</xpath>
		        <value>
                    <li>WoW_truesilver</li>
                </value>
            </li>
			<li Class="PatchOperationAdd">
		        <xpath>/Defs/FactionDef[defName = "BloodElf"]/apparelStuffFilter/thingDefs</xpath>
		        <value>
                    <li>WoW_adamantite</li>
                </value>
            </li>
			<li Class="PatchOperationAdd">
		        <xpath>/Defs/FactionDef[defName = "Forsaken"]/apparelStuffFilter/thingDefs</xpath>
		        <value>
                    <li>WoW_darkiron</li>
                </value>
            </li>
			<li Class="PatchOperationAdd">
		        <xpath>/Defs/FactionDef[defName = "HighElf"]/apparelStuffFilter/thingDefs</xpath>
		        <value>
                    <li>WoW_truesilver</li>
                </value>
            </li>
			<li Class="PatchOperationAdd">
		        <xpath>/Defs/FactionDef[defName = "Horde"]/apparelStuffFilter/thingDefs</xpath>
		        <value>
                    <li>WoW_darkiron</li>
                </value>
            </li>
