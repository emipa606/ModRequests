			<li Class="PatchOperationAdd">
		        <xpath>/Defs/FactionDef[defName = "Draenei"]/apparelStuffFilter/thingDefs</xpath>
		        <value>
                    <li>WoW_adamantite</li>
                </value>
            </li>
        </operations>
        </match>
    </Operation>
</Patch>
