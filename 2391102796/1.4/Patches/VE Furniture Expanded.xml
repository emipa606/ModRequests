<!-- No peeking >:[  -->

<Patch>

	
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>	
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<ThingDef ParentName="FurnitureBase">
							<defName>MAG_GarbageBin</defName>
							<label>Archotech cleaner</label>
							<description>A small archotech device that cleans filth in a very large radius.</description>
							<graphicData>
								<texPath>Things/Building/OtherMods/MAG_ArchotechCleaner</texPath>
								<drawSize>(1,1)</drawSize>
								<graphicClass>Graphic_Single</graphicClass>
								<shadowData>
									<volume>(0.3, 0.6, 0.3)</volume>
								</shadowData>
								<damageData>
									<rect>(0.2,0.2,0.6,0.6)</rect>
								</damageData>
							</graphicData>
							<altitudeLayer>Building</altitudeLayer>
							<passability>PassThroughOnly</passability>
							<tickerType>Normal</tickerType>
							<fillPercent>0.20</fillPercent>
							<statBases>
								<MaxHitPoints>100</MaxHitPoints>
								<WorkToBuild>495</WorkToBuild>
								<Mass>2</Mass>
								<Flammability>1.0</Flammability>
								<Cleanliness>8</Cleanliness>
								<Beauty>8</Beauty>
							</statBases>
							<costList>
								<ArchotechScrap>45</ArchotechScrap>
							</costList>
							<size>(1,1)</size>
							<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
							<rotatable>false</rotatable>
							<researchPrerequisites>
								<li>ArchoTechTierOne</li>
							</researchPrerequisites>
							<designationCategory>MoreArchotechGarbage</designationCategory>
							<specialDisplayRadius>40</specialDisplayRadius>
							<comps>
								<li Class="AOMoreFurniture.CompProperties_BinClean">
									<TimerInTicks>1000</TimerInTicks>
									<Radius>40</Radius>
								</li>
							</comps>
						</ThingDef>


						
						
					</value>
				</li>
			
				</operations>
		</match>
	</Operation>

</Patch>
