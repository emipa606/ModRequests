<!-- No peeking >:[  -->

<Patch>

	
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Various Space Ship Chunk (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>

				
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<ThingDef ParentName="SmallShipChunkBase">
							<defName>ShipChunk_MAG_large</defName>
							<label>small archotech chunk</label>
							<description>A small chunk of an archotech device. Can be deconstructed to yield useful archotech fragments and some archotech mass.</description>
							<graphicData>
								<texPath>Things/Building/OtherMods/ShipChunk_MAG</texPath>
							</graphicData>
							<costList>
								<ArchotechScrap>10</ArchotechScrap>
								<archotechmatteraddingsomecraptoavoidproblems>10</archotechmatteraddingsomecraptoavoidproblems>
							</costList>
						</ThingDef>
						<ThingDef ParentName="LargeShipChunkBase">
							<defName>ShipChunk_MAG_small</defName>
							<label>archotech chunk</label>
							<description>A chunk of an archotech device. Can be deconstructed to yield useful archotech fragments and some archotech mass.</description>
							<graphicData>
								<texPath>Things/Building/OtherMods/ShipChunk_MAG</texPath>
							</graphicData>
							<costList>
								<ArchotechScrap>20</ArchotechScrap>
								<archotechmatteraddingsomecraptoavoidproblems>20</archotechmatteraddingsomecraptoavoidproblems>
							</costList>
						</ThingDef>
	</value>
	</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Rim-Effect: Prothean Archotechs</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Normal</success>
						<operations>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/ThingDef[defName = "ShipChunk_MAG_large"]/label</xpath>
								<value>
									<label>prothean chunk</label>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/ThingDef[defName = "ShipChunk_MAG_large"]/description</xpath>
								<value>
									<description>A chunk of a prothean device. Can be deconstructed to yield useful prothean fragments and some prothean mass.</description>
								</value>
							</li>

							<li Class="PatchOperationReplace">
								<xpath>/Defs/ThingDef[defName = "ShipChunk_MAG_small"]/label</xpath>
								<value>
									<label>small prothean chunk</label>
								</value>
							</li>
							<li Class="PatchOperationReplace">
								<xpath>/Defs/ThingDef[defName = "ShipChunk_MAG_small"]/description</xpath>
								<value>
									<description>A small chunk of a prothean device. Can be deconstructed to yield useful prothean fragments and some prothean mass.</description>
								</value>
							</li>
							
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>
