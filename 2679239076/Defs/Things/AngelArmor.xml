<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- ========================================== Golden Angel Armor ========================================== -->
    <ThingDef ParentName="ArmorSmithableBase">
        <defName>GoldenAngelArmor</defName>
        <label>seraphim armor</label>
        <description>The best armor the heavenly host has to offer. Glistening with the beauty of heaven and rippling with the power of holy judgement. This amor is worn to show the rank of a Seraphim. This gleam of this armor is the last thing many a sinner sees before their time is up.</description>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
            <researchPrerequisite>PlateArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>9</Crafting>
            </skillRequirements>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Apparel/AngelArmor/Golden/Armor/AngelArmorGolden</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
		<costList>
			<Steel>220</Steel>
			<Gold>60</Gold>
		</costList>
        <statBases>
            <WorkToMake>60000</WorkToMake>
            <MaxHitPoints>380</MaxHitPoints>
            <Mass>20</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>1.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.6</ArmorRating_Heat>
			<Insulation_Cold>24</Insulation_Cold>
			<Insulation_Heat>8</Insulation_Heat>
			<EquipDelay>20</EquipDelay>
        </statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.8</MoveSpeed>
			<PawnBeauty>1</PawnBeauty>
		</equippedStatOffsets>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/AngelArmor/Golden/Armor/AngelArmorGolden</wornGraphicPath>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <tags>
                <li>AngelArmorGolden</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255,255,255)</only>
				</li>
			</options>
		</colorGenerator>
    </ThingDef>
	
	<ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>GoldenAngelHelmet</defName>
        <label>seraphim helmet</label>
        <description>The best helmet the heavenly host has to offer. This Helmet is exclusively worn by Seraphim to show their rank and status.</description>
        <techLevel>Medieval</techLevel>
        <recipeMaker>
            <researchPrerequisite>PlateArmor</researchPrerequisite>
            <recipeUsers Inherit='False'>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>9</Crafting>
            </skillRequirements>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Apparel/AngelArmor/Golden/Helmet/AngelHelmetGolden</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <MaxHitPoints>150</MaxHitPoints>
            <Mass>3.5</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>1.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.6</ArmorRating_Heat>
			<Insulation_Cold>4</Insulation_Cold>
			<Insulation_Heat>2</Insulation_Heat>
			<EquipDelay>6</EquipDelay>
        </statBases>
		<costList>
			<Steel>50</Steel>
			<Gold>30</Gold>
		</costList>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/AngelArmor/Golden/Helmet/AngelHelmetGolden</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>AngelArmorGolden</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255,255,255)</only>
				</li>
			</options>
		</colorGenerator>
    </ThingDef>
	
