<!-- ========================================== Spear ========================================== -->
    
   <ThingDef ParentName="MeleeWeaponAngel">
    <defName>AngelMeleeWeapon_AngelicSpear</defName>
    <label>spear of destiny</label>
    <description>This spear is rumored to erase the souls of those it slays, a fate worse than simple death.</description>
    <equippedAngleOffset>-5</equippedAngleOffset>
    <graphicData>
      <texPath>Things/Weapons/AngelWeapons/AngelicSpear/AngelicSpear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.3</drawSize>
    </graphicData>
	<equippedStatOffsets>
		<PawnBeauty>1</PawnBeauty>
	</equippedStatOffsets>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.8</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>26</power>
        <cooldownTime>2.8</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>20</power>
		<armorPenetration>0.7</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	<comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
      </li>
    </comps>
  </ThingDef>
	
