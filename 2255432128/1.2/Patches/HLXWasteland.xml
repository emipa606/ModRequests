<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationConditional">
	<xpath>*/ThingDef[defName = "RG-WF_WastelandDeer"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "RG-WF_WastelandDeer" or defName = "RG-WF_WastelandBear" or defName = "RG-WF_WastelandDeathclaw"]/race[not(packAnimal)]</xpath>
			<value>
				<packAnimal>true</packAnimal>
			</value>
		</match>
	</Operation>
</Patch>