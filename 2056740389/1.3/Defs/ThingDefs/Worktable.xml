	<ThingDef ParentName="ClutterWorkTableBuildingBase">
		<defName>SteelRefiner</defName>
		<label>Steel cutting station</label>
		<thingClass>ClutterFurniture.SteelRefiner</thingClass>
		<description>Suregry table redisagned for more industrial needs by Oragepoilu Industries</description>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
			<texPath>Clutter/Tables/SteelBench</texPath>
