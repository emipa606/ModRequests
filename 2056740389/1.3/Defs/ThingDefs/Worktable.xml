<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--Parents-->
	<ThingDef Name="ClutterWorkTableBuildingBase" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
	</ThingDef>
	
	<ThingDef Name="ClutterBenchBase" ParentName="ClutterWorkTableBuildingBase" Abstract="True">
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<canOverlapZones>false</canOverlapZones>
		<comps>
			<li>
				<compClass>CompReportWorkSpeed</compClass>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ReportWorkSpeedPenalties</li>
		</placeWorkers>
	</ThingDef>
  

  
<!--Children-->

	<ThingDef ParentName="ClutterBenchBase">
		<defName>FurnitureAssembler</defName>
		<label>Furniture Assembler</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>Big work bench for assembling various furniture</description>
		<graphicData>
			<shaderType>Transparent</shaderType>
			<texPath>Clutter/Furniture/fas</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
			<Steel>150</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-15</Cleanliness>
		</statBases>
		<size>(2,2)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>60</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,2)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<researchPrerequisites>
			<li>ComfyTech</li>
		</researchPrerequisites>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
				<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
	</ThingDef>
  
