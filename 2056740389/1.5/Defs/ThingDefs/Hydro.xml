<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="ClutterHydroBuildingBase" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
	</ThingDef>
  
	<ThingDef Class="Clutter_Furniture.ClutterThingDefsFurniture" ParentName="ClutterHydroBuildingBase">
		<defName>ClutterAlloyHydroponicsBasinVS</defName>
		<label>Hydroponic Pod</label>
		<thingClass>Clutter_Furniture.Hydrophonic</thingClass>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
			<texPath>Clutter/Hydrophonic/Pot</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>LowPlant</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<description>Pot dug into the ground with additonal hydroponic support</description>
		<size>(1,1)</size>
		<statBases>
			<WorkToBuild>2200</WorkToBuild>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>25</Beauty>
			<Cleanliness>-3</Cleanliness>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<costList>
			<ClutterSteelParts>10</ClutterSteelParts>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<fertility>2.5</fertility>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<building>
			<defaultPlantToGrow>Plant_Rice</defaultPlantToGrow>
			<sowTag>Ground</sowTag>
		</building>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>25</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<rotatable>false</rotatable>
		<Ui_ButtonHydro>Clutter/Ui/PlantGroupSow</Ui_ButtonHydro>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<researchPrerequisites>
            <li>Hydroponics</li>
            <li>ComfyTech</li>
		</researchPrerequisites>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Production</designationCategory>
	</ThingDef>
  


</Defs>