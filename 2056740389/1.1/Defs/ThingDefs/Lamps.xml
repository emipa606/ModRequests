<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="ClutterGlowerBuildingBase" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
        <designationCategory>Furniture</designationCategory>
        <minifiedDef>MinifiedThing</minifiedDef>
        <thingCategories>
            <li>BuildingsFurniture</li>
        </thingCategories>
        <statBases>
            <Mass>2</Mass>
        </statBases>
	</ThingDef>
  
	<ThingDef Name="PowahBase" ParentName="ClutterGlowerBuildingBase" Abstract="True">
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>90</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
				<soundPowerOn>Power_OnSmall</soundPowerOn>
				<soundPowerOff>Power_OffSmall</soundPowerOff>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
	</ThingDef>

	<ThingDef ParentName="PowahBase">
		<defName>ClutterFloorLampA</defName>
		
		<label>Floor Lamp</label>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Clutter/Lamp/FloorLamp</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>700</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>15</Beauty>
		</statBases>
		<selectable>true</selectable>
		<description>Floor mounted simple side lamp, contains all of the advenced anti-tripping features</description>
		
		<size>(1,1)</size>
		<costList>
			<Steel>20</Steel>
			<ClutterSteelParts>2</ClutterSteelParts>
		</costList>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<comps>
			<li Class="CompProperties_Glower">
				<compClass>CompGlower</compClass>
				<glowRadius>12</glowRadius>
				<glowColor>(217,217,217,0)</glowColor>
			</li>
		</comps>

		<researchPrerequisites>
		 	<li>ComfyTechTierII</li>
		</researchPrerequisites>
		<rotatable>true</rotatable>
	</ThingDef>
	
