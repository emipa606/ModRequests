<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="ClutterCraftableItemsBase" ParentName="ResourceBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>SmeltingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<workAmount>750</workAmount>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<unfinishedThingDef>ClutterUnfinishedThing</unfinishedThingDef>
			<recipeUsers>
				<li>SteelRefiner</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>

    <ThingDef>
	    <defName>ClutterUnfinishedThing</defName>
		<thingClass>UnfinishedThing</thingClass>
		<category>Item</category>
		<label>unfinished steel parts</label>
		<graphicData>
			<texPath>SmallSteel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
    	</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<useHitPoints>true</useHitPoints>
		<isUnfinishedThing>true</isUnfinishedThing>
		<selectable>true</selectable>
		<tradeability>None</tradeability>
		<drawerType>RealtimeOnly</drawerType>
		<statBases>
			<Mass>5</Mass>
      		<MaxHitPoints>50</MaxHitPoints>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
		<thingCategories>
			<li>Unfinished</li>
		</thingCategories>
  	</ThingDef>

  
	<ThingDef ParentName="ClutterCraftableItemsBase">
		<defName>ClutterSteelParts</defName>
		<label>Steel components</label>
		<description>Various screws, plates,frame parts and generally wierd parts used in crafting</description>
		<graphicData>
			<texPath>SteelParts</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>50</stackLimit>
		<costList>
			<Steel>5</Steel>
		</costList>
		<statBases>
			<Mass>1</Mass>
			<WorkToBuild>750</WorkToBuild>
			<MaxHitPoints>70</MaxHitPoints>
			<MarketValue>21</MarketValue>
			<Flammability>1.0</Flammability>
		</statBases>
		<intricate>true</intricate>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>
  
</Defs>