		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		
		<designationCategory>Furniture</designationCategory>
	</ThingDef>

