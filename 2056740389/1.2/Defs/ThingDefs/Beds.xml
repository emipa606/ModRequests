	<ThingDef ParentName="BedWithQualityBase" Name="ClutterSleepingPod">
		<defName>ClutterSleepingPod</defName>
		<label>sleeping pod</label>
		<description>Redesigned cryo pod, with some medical goodies still working and almost 40% guarantee that you wont get frozen.</description>
		<graphicData>
			<texPath>Clutter/Beds/EkieBed/MBed</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1.2,2.2)</drawSize>
			<damageData>
				<rect>(0,0.05,1,1.95)</rect>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>140</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>8</Beauty>
			<Mass>65</Mass>
			<WorkToBuild>2000</WorkToBuild>
			<BedRestEffectiveness>1</BedRestEffectiveness>
			<Comfort>0.83</Comfort>
			<ImmunityGainSpeedFactor>1.2</ImmunityGainSpeedFactor>
			<MedicalTendQualityOffset>0.15</MedicalTendQualityOffset>
		</statBases>
		<size>(1,2)</size>
		<costList>
            <Steel>75</Steel>
			<Cloth>20</Cloth>
			<MedicineIndustrial>5</MedicineIndustrial>
		</costList>
		<building>
			<bed_showSleeperBody>False</bed_showSleeperBody>
			<bed_healPerDay>14</bed_healPerDay>
      		<forceShowRoomStats>true</forceShowRoomStats>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>VitalsMonitor</li>
					<li>ClutterCabinetA</li>
				</linkableFacilities>
			</li>
		</comps>
		<fillPercent>0.4</fillPercent>
		<pathCost>60</pathCost>
		<passability>PassThroughOnly</passability>
		<drawGUIOverlay>True</drawGUIOverlay>
		<researchPrerequisites>
			<li>ComfyTechTierII</li>
			<li>HospitalBed</li>
		</researchPrerequisites>
        <designatorDropdown>ClutterSleepingPod</designatorDropdown>

		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
	</ThingDef>
  
