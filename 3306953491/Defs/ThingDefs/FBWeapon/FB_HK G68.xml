<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HKG68_FB</defName>
    <label>HK G68</label>
    <description>In the 6.8 project, it lost the bid alongside the RM277. The reason was that after adopting a side-mounted charging handle, the gun experienced consistently high failure rates, leading to its unsuccessful bid.</description>
    <graphicData>
      <texPath>Things/FBWeapon/HK G68</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.2</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>410</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>35000</WorkToMake>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.95</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
	  <Plasteel>1</Plasteel>
	  <Uranium>1</Uranium>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HKG68_FB</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>37</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>HKG68</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>AssaultRifle</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
	<equippedStatOffsets>
	</equippedStatOffsets>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HKG68_FB</defName>
    <label>HK G68 Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
	  <armorPenetrationBase>0.25</armorPenetrationBase>
	  <stoppingPower>1</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  
  </Defs>