<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="BuildingBase">
		<defName>EVP_Sail_Loom</defName>
		<label>Sail Loom</label>
		<description>a table for creating sails.</description>    
		<thingClass>Building_WorkTable</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
      		<texPath>Things/Building/Production/SailLoom/SailLoom</texPath>
      		<graphicClass>Graphic_Multi</graphicClass>
      		<shaderType>CutoutComplex</shaderType>
      		<drawSize>(4,4)</drawSize>
    	</graphicData>
    	<altitudeLayer>Building</altitudeLayer>
    	<statBases>
			<Mass>4</Mass>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToBuild>800</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<designationCategory>Early_Early_Vehicles</designationCategory>
    	<size>(3,3)</size>
    	<pathCost>70</pathCost>
    	<hasInteractionCell>true</hasInteractionCell>
    	<interactionCellOffset>(0,0,-2)</interactionCellOffset>
    	<passability>PassThroughOnly</passability>
    	<surfaceType>Item</surfaceType>
    	<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    	<building>
			<uninstallWork>125</uninstallWork>
			<buildingTags>
				<li>Production</li>
			</buildingTags>
		</building>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<researchPrerequisites>
      		<li>Sailing</li>
    	</researchPrerequisites>
	</ThingDef>

</Defs>