<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Add "Ashy" to the stuffCategories of SculptureSmall -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="SculptureSmall"]/stuffCategories</xpath>
		<value>
			<li>Ashy</li>
		</value>
	</Operation>

	<!-- Add "Ashy" to the stuffCategories of SculptureLarge -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="SculptureLarge"]/stuffCategories</xpath>
		<value>
			<li>Ashy</li>
		</value>
	</Operation>

	<!-- Add "Ashy" to the stuffCategories of SculptureGrand -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="SculptureGrand"]/stuffCategories</xpath>
		<value>
			<li>Ashy</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/RecipeDef[defName="CremateCorpse"]</xpath>
		<value>
			<products>
				<Ashes>50</Ashes>
			</products>
		</value>
	</Operation>
</Patch>
