<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--- Pickaxe axe -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_AXEPICKAXE</defName>
    <label>axe pickaxe</label>
    <description>An industrial tool for plant work and excavation. It's in cracking away at minerals and chopping plants gives it an edge in combat having essentially 2 weapons in one, but is slow due to featuring both an axe and pickaxe head.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/AXEPICKAXE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <techLevel>Industrial</techLevel>
    <costStuffCount>85</costStuffCount>
    <equippedStatOffsets>
      <MiningSpeed>+0.25</MiningSpeed>
      <SmoothingSpeed>+0.10</SmoothingSpeed>
      <PlantWorkSpeed>+0.20</PlantWorkSpeed>
      <DeepDrillingSpeed>+0.15</DeepDrillingSpeed>
    </equippedStatOffsets>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>3.5</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <recipeMaker>
      <researchPrerequisite>Machining</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <weaponTags>
      <li>MedievalMeleeDecent</li>
      <li>ToolDecent</li>
    </weaponTags>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>axe head</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
		<armorPenetration>0.10</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>pickaxe point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>7</power>
		<armorPenetration>0.475</armorPenetration>
        <cooldownTime>1.45</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!--- Hamwrench -->
  <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
    <defName>MeleeWeapon_HAMWRENCH</defName>
    <label>hamwrench</label>
    <description>A refined construction tool that greatly improves the speed at which pawns construct and fabricate new items. Rather heavy.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/HAMWRENCH</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <uiIconScale>1.45</uiIconScale>
    <techLevel>Industrial</techLevel>
    <costStuffCount>50</costStuffCount>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>1.98</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <recipeMaker>
      <researchPrerequisite>Machining</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
	<generateCommonality>0.11</generateCommonality>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <equippedStatOffsets>
      <ConstructionSpeed>+0.25</ConstructionSpeed>
      <FixBrokenDownBuildingSuccessChance>+0.35</FixBrokenDownBuildingSuccessChance>
    </equippedStatOffsets>
    <weaponTags>
      <li>MedievalMeleeDecent</li>
      <li>ToolDecent</li>
    </weaponTags>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>hammer head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10.2</power>
        <cooldownTime>2</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>3</amount>
            <chance>0.25</chance>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>wrench</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6.7</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!--- Work Knife -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_WORKKNIFE</defName>
    <label>work knife</label>
    <techLevel>Industrial</techLevel>
    <description>A large knife for a wide variety of jobs from cooking, cutting and even surgery. The work knife falls behind in combat due to its bulky design, but still does fair damage to enemies when called upon.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/WORKKNIFE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <uiIconScale>1.65</uiIconScale>
    <weaponTags>
      <li>MedievalMeleeBasic</li>
      <li>NeolithicMeleeBasic</li>
      <li>ToolDecent</li>
    </weaponTags>
    <weaponClasses>
      <li>Neolithic</li>
    </weaponClasses>
    <costStuffCount>30</costStuffCount>
    <statBases>
      <WorkToMake>3150</WorkToMake>
      <Mass>0.85</Mass>
    </statBases>
    <equippedAngleOffset>+15</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <equippedStatOffsets>
      <PlantWorkSpeed>+0.12</PlantWorkSpeed>
      <WorkSpeedGlobal>+0.05</WorkSpeedGlobal>
    </equippedStatOffsets>
    <burnableByRecipe>false</burnableByRecipe>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2.1</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>13</power>
        <cooldownTime>1.75</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2.25</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
  <!--- Electrosaw -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_ELECTROSAW</defName>
    <label>electrosaw</label>
    <description>A large motor connected to a fast moving, ridged chain. Electrosaws are commonly used for plant related work, however their ability to quickly overwhelm targets in melee combat can prove useful. It's size will often hinder work related to anything other than cutting.</description>
    <soundInteract>GRAB_CHAINSAW</soundInteract>
    <meleeHitSound>FIRE_CHAINSAW</meleeHitSound>
    <equippedAngleOffset>-10</equippedAngleOffset>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/CHAINSAW</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <uiIconScale>1.45</uiIconScale>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>2.35</Mass>
    </statBases>
    <relicChance>1</relicChance>
    <costStuffCount>125</costStuffCount>
    <equippedStatOffsets>
      <PlantWorkSpeed>+0.65</PlantWorkSpeed>
      <WorkSpeedGlobal>-0.30</WorkSpeedGlobal>
      <MoveSpeed>-0.15</MoveSpeed>
    </equippedStatOffsets>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <weaponClasses>
      <li>MeleePiercer</li>
    </weaponClasses>
	<weaponTags>
      <li>ToolDecent</li>
    </weaponTags>
    <techLevel>Industrial</techLevel>
    <tools>
      <li>
        <label>chain</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>5</power>
        <cooldownTime>.6</cooldownTime>
		<armorPenetration>0.08</armorPenetration>
        <extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>1</amount>
            <chance>0.05</chance>
          </li>
          <li>
            <def>EMP</def>
            <amount>9</amount>
            <chance>0.05</chance>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>chain(electric)</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>3</power>
        <cooldownTime>.3</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>2</amount>
            <chance>0.10</chance>
          </li>
          <li>
            <def>EMP</def>
            <amount>9</amount>
            <chance>0.01</chance>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>chain(critical)</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.4</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>3</amount>
            <chance>0.10</chance>
          </li>
          <li>
            <def>EMP</def>
            <amount>9</amount>
            <chance>0.001</chance>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
  </ThingDef>
  
</Defs>