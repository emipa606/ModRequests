<?xml version="1.0" encoding="UTF-8"?>

<Defs>

   <RecipeDef ParentName="RecipeBionicProsthesis">
      <defName>CreateCombinedRib</defName>
      <label>Craft combined rib</label>
      <description>Crafts a combined rib from a medical, adrenaline and painkiller ribs and some luciferium.</description>
      <jobString>Crafting bionic.</jobString>
      <ingredients>
         <li>
            <filter>
               <thingDefs>
                  <li>Plasteel</li>
               </thingDefs>
            </filter>
            <count>35</count>
         </li>
		 <li>
            <filter>
               <thingDefs>
                  <li>MedicalRib</li>
               </thingDefs>
            </filter>
            <count>1</count>
         </li>
		 <li>
            <filter>
               <thingDefs>
                  <li>AdrenalineRib</li>
               </thingDefs>
            </filter>
            <count>1</count>
         </li>
		 <li>
            <filter>
               <thingDefs>
                  <li>PainkillerRib</li>
               </thingDefs>
            </filter>
            <count>1</count>
         </li>
		 <li>
            <filter>
               <thingDefs>
                  <li>Luciferium</li>
               </thingDefs>
            </filter>
            <count>5</count>
         </li>
      </ingredients>
      <fixedIngredientFilter>
         <thingDefs>
		    <li>Plasteel</li>
            <li>MedicalRib</li>
            <li>AdrenalineRib</li>
			<li>PainkillerRib</li>
			<li>Luciferium</li>
         </thingDefs>
      </fixedIngredientFilter>
      <products>
         <CombinedRib>1</CombinedRib>
      </products>
	  <recipeUsers>
		<li>TableBionics</li>
	  </recipeUsers>
      <researchPrerequisite>RibReplacements</researchPrerequisite>
   </RecipeDef>

</Defs>