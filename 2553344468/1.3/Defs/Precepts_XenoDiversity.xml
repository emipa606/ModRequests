  <!-- Precepts -->

  <PreceptDef>
    <defName>XenoDiversity_Abhorrent</defName>
    <issue>XenoDiversity</issue>
    <label>intense xenophobia</label>
    <description>Other species are evil and inferior. It's totally unacceptable to let them exist in the community.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>60</displayOrderInIssue>
    <associatedMemes>
      <li>HumanPrimacy</li>
      <li>Supremacist</li>
    </associatedMemes>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <thought>XenoDiversity_Abhorrent</thought>
      </li>
      <li Class="PreceptComp_SituationalThought">
        <thought>XenoDiversity_Abhorrent_Social</thought>
      </li>
      <li Class="PreceptComp_SituationalThought">
        <thought>XenoDiversity_Abhorrent_Uniform</thought>
        <description>All colonists have same species</description>
      </li>
      <li Class="PreceptComp_SituationalThought">
        <thought>IdeoLeaderXenoResentmentAbhorrent</thought>
      </li>
      <li Class="PreceptComp_SelfTookMemoryThought">
        <eventDef>KilledHumanlikeXeno</eventDef>
        <thought>XenoDiversity_Killed_Abhorrent</thought>
      </li>
      <!-- <li Class="PreceptComp_KnowsMemoryThought">
        <eventDef>KilledHumanlikeXeno</eventDef>
        <thought>XenoDiversity_WitnessDeath_Abhorrent_Mood</thought>
        <description>Saw someone kill a xeno</description>
      </li> -->
    </comps>
  </PreceptDef>

