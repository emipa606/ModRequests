<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <XmlExtensions.SettingsMenuDef>
        <defName>rhinogwpatch.settings</defName>
        <modId>rhinogwpatch</modId>
        <label>Grimworld / WH40K Factions Patch</label>
        <settings>
            <li Class="XmlExtensions.Setting.Text">
                <text>Grimworld / WH40K Factions Patch</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.SetColor">
                <color>(255,0,0)</color>
            </li>
            <li Class="XmlExtensions.Setting.Text">
                <text>Restart required for any changes to take effect</text>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.SetColor"/>
            <!-- Traders -->
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Traders</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.traders</key>
                <label>Patch Imperium traders to have Grimworld items?</label>
                <defaultValue>true</defaultValue>
            </li>

            <!-- Research -->
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Research</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.spacemarine.research</key>
                <label>Remove Spacemarine armour research? (WH40k Factions)</label>
                <defaultValue>true</defaultValue>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.chaosmarine.research</key>
                <label>Remove Chaosmarine armour research? (WH40k Factions)</label>
                <defaultValue>true</defaultValue>
            </li>

            
            
            <!-- Chaos Marines -->
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Chaos Marine Gear</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.chaosmarine.weapons</key>
                <label>Patch chaos marines to have Grimworld weapons?</label>
                <defaultValue>true</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Chaos Cultists Gear</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.chaoscultist.weapons</key>
                <label>Patch chaos cultists to have Grimworld weapons?</label>
                <defaultValue>true</defaultValue>
            </li>
            <li Class="XmlExtensions.Setting.Text">
                <text>What type of weapons should the cultists use? (Weapon Patch must be on)</text>
                <anchor>Left</anchor>
            </li>
            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>toggle.chaoscultist.weapontype</key>
                <defaultValue>1</defaultValue>
                <buttons>
                <li>
                    <label>Lasguns</label>
                    <value>1</value>
                </li>
                <li>
                    <label>Autoguns</label>
                    <value>2</value>
                </li>
                <li>
                    <label>Both</label>
                    <value>3</value>
                </li>
                </buttons>
            </li>

            <!-- Space Marines -->
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Imperium Space Marine Gear</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.spacemarine.armour</key>
                <label>Patch Imperium space marines to have Grimworld armours?</label>
                <defaultValue>true</defaultValue>
            </li>
            <li Class="XmlExtensions.Setting.Text">
                <text>What type of painting should the SM have? (Armour Patch must be on)</text>
                <anchor>Left</anchor>
            </li>
            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>toggle.spacemarine.armourtype</key>
                <defaultValue>1</defaultValue>
                <buttons>
                <li>
                    <label>Ultramarines</label>
                    <value>1</value>
                </li>
                <li>
                    <label>Black Templars</label>
                    <value>2</value>
                </li>
                <li>
                    <label>Blood Ravens</label>
                    <value>3</value>
                </li>
                <li>
                    <label>Carcharodons</label>
                    <value>4</value>
                </li>
                <li>
                    <label>Imperial Fists</label>
                    <value>5</value>
                </li>
                <li>
                    <label>Iron Hands</label>
                    <value>6</value>
                </li>
                <li>
                    <label>Legion of the Damned</label>
                    <value>7</value>
                </li>
                <li>
                    <label>Minotaurs</label>
                    <value>8</value>
                </li>
                <li>
                    <label>Raven Guard</label>
                    <value>9</value>
                </li>
                <li>
                    <label>Salamanders</label>
                    <value>10</value>
                </li>
                <li>
                    <label>Space Wolves</label>
                    <value>11</value>
                </li>
                <li>
                    <label>White Scars</label>
                    <value>12</value>
                </li>
                </buttons>
            </li>
            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.spacemarine.weapons</key>
                <label>Patch Imperium space marines to have Grimworld weapons?</label>
                <defaultValue>true</defaultValue>
            </li>

            <!-- Imperium Soldiers  -->
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Imperium Guardsman Gear</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.guardsman.armour</key>
                <label>Patch Imperium guardsman to have Grimworld armour?</label>
                <defaultValue>true</defaultValue>
            </li>
            <li Class="XmlExtensions.Setting.Text">
                <text>What type of armour should the guardsman wear? (Armour Patch must be on)</text>
                <anchor>Left</anchor>
            </li>
            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>toggle.guardsman.armourtype</key>
                <defaultValue>1</defaultValue>
                <buttons>
                <li>
                    <label>Cadian Shock Troops</label>
                    <value>1</value>
                </li>
                <li>
                    <label>Kasrkin</label>
                    <value>2</value>
                </li>
                <li>
                    <label>Tempestus Scions</label>
                    <value>3</value>
                </li>
                <li>
                    <label>Death Korps of Krieg</label>
                    <value>4</value>
                </li>
                <li>
                    <label>Valhallan Ice Warriors</label>
                    <value>5</value>
                </li>
                <li>
                    <label>Tallarn Desert Raiders</label>
                    <value>6</value>
                </li>
                <li>
                    <label>Catachan Jungle Fighters</label>
                    <value>7</value>
                </li>
                <li>
                    <label>Steel Legion</label>
                    <value>8</value>
                </li>
                <li>
                    <label>Mordian Iron Guard</label>
                    <value>9</value>
                </li>
                <li>
                    <label>Vostroyan Firstborn</label>
                    <value>10</value>
                </li>
                </buttons>
            </li>
            <li Class="XmlExtensions.Setting.Gap"/>


            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggle.guardsman.weapons</key>
                <label>Patch Imperium guardsman to have Grimworld weapons?</label>
                <defaultValue>true</defaultValue>
            </li>
            <li Class="XmlExtensions.Setting.Text">
                <text>What type of weapons should the guardsman use? (Weapon Patch must be on)</text>
                <anchor>Left</anchor>
            </li>
            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>toggle.guardsman.weapontype</key>
                <defaultValue>1</defaultValue>
                <buttons>
                <li>
                    <label>Lasguns</label>
                    <value>1</value>
                </li>
                <li>
                    <label>Autoguns</label>
                    <value>2</value>
                </li>
                <li>
                    <label>Both</label>
                    <value>3</value>
                </li>
                </buttons>
            </li>
            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.ResetSettings"/>
        </settings>
    </XmlExtensions.SettingsMenuDef>
</Defs>