<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <ThingDef Name="HawaiianApparelNoQualityBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>14</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-3</Beauty>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <burnableByRecipe>true</burnableByRecipe>
    <smeltable>true</smeltable>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
  </ThingDef>

  <ThingDef Name="HawaiianApparelBase" ParentName="HawaiianApparelNoQualityBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="HawaiianApparelMakeableBase" ParentName="HawaiianApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>


         ====================================== Shirts ==================================


  <ThingDef ParentName="HawaiianApparelMakeableBase">
    <defName>Apparel_HawaiianB</defName>
    <description>A light blue Hawaiian shirt, For those who played too much Vice City.</description>
    <label>Hawaiian Shirt Blue</label>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Blue_Hawaiian/Blue_Hawaiian</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.05</drawSize>
    </graphicData>
<costList>
      <Cloth>80</Cloth>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>10000</WorkToMake>
      <Mass>2</Mass>
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
      <ArmorRating_Heat>0.40</ArmorRating_Heat>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>20</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Blue_Hawaiian/Blue_Hawaiian</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  
