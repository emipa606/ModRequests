<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

  <RecipeDef>
    <defName>MakeLowCalibarAmmo</defName>
    <label>craft low calibar ammo</label>
    <description>Craft ammo for low calibar guns.</description>
    <jobString>crafting ammo.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>800</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Sulfur</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Sulfur</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <LowCalibarAmmo>50</LowCalibarAmmo>
    </products>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>ElectricSmithy</li>
      <li>FueledSmithy</li>
    </recipeUsers>
  </RecipeDef>


