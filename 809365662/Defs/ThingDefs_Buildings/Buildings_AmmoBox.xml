<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="BuildingBase">
    <defName>AmmoBox</defName>
    <label>ammo box</label>
    <thingClass>ColonyNeedAmmunitionMod.Building_AmmoBox</thingClass>
    <graphicData>
      <texPath>Things/Building/AmmoBox</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.2</fillPercent>
    <tickerType>Rare</tickerType>
    <castEdgeShadows>true</castEdgeShadows>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>20</costStuffCount>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToMake>750</WorkToMake>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>A box for storing Ammunitions. Each shooting guns or bows , consume Ammunition from this box. Guns or bows need suitable ammunittion to shoot. When ammo is out , colonist drop own weapon immediately so please be careful.</description>
    <size>(1,1)</size>
    <building>
      <preventDeterioration>true</preventDeterioration>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Ammo</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Ammo</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <designationCategory>Security</designationCategory>
  </ThingDef>

</ThingDefs>