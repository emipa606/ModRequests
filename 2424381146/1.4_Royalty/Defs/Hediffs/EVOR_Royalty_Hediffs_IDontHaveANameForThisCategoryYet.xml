<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- norn crown -->
	<ThingDef ParentName="EVOR_Item_Base_170protein4mechanites">
		<defName>EVOR_Item_Sternum_NornCrown</defName>
		<label>&lt;color=#00FFF7&gt;norn crown&lt;/color&gt;</label>
		<description>Despite the name, the Norn Crown is actually a writing mass of psychically tuned flesh. Implanted in the sternum, it allows the user to change the moods of beings around them.</description>
		<descriptionHyperlinks>
			<RecipeDef>EVOR_SurgeryInstall_Sternum_NornCrown</RecipeDef>
			<HediffDef>EVOR_Hediff_Sternum_NornCrown</HediffDef>
		</descriptionHyperlinks>
		<recipeMaker>
			<researchPrerequisite>EVOR_Research_Artifact_NornCrown</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	<HediffDef ParentName="EVOR_Hediff_ImplantBase">
		<defName>EVOR_Hediff_Sternum_NornCrown</defName>
		<label>&lt;color=#00FFF7&gt;norn crown&lt;/color&gt;</label>
		<labelNoun>norn crown</labelNoun>
		<spawnThingOnRemoved>EVOR_Item_Sternum_NornCrown</spawnThingOnRemoved>
		<comps>
			<li Class="HediffCompProperties_PsychicHarmonizer">
				<range>42</range>
				<thought>EVOR_Thought_Royalty_NornCrown</thought>
			</li>
		</comps>
		<description>Despite the name, the Norn Crown is actually a writing mass of psychically tuned flesh. Implanted in the sternum, it allows the user to change the moods of beings around them.</description>
    	<descriptionHyperlinks>
			<ThingDef>EVOR_Item_Sternum_NornCrown</ThingDef>
			<RecipeDef>EVOR_SurgeryInstall_Sternum_NornCrown</RecipeDef>
		</descriptionHyperlinks>
	</HediffDef>
	<RecipeDef ParentName="EVOR_SurgeryInstallImplantBase">
		<defName>EVOR_SurgeryInstall_Sternum_NornCrown</defName>
		<appliedOnFixedBodyParts><li>Sternum</li></appliedOnFixedBodyParts>
		<label>&lt;color=#00FFF7&gt;implant norn crown&lt;/color&gt;</label>
		<description>Implant norn crown.</description>
		<jobString>Implanting norn crown.</jobString>
		<skillRequirements><Medicine>13</Medicine></skillRequirements>
		<ingredients><li><filter><thingDefs><li>EVOR_Item_Sternum_NornCrown</li></thingDefs></filter></li></ingredients>
		<fixedIngredientFilter><thingDefs><li>EVOR_Item_Sternum_NornCrown</li></thingDefs></fixedIngredientFilter>
		<addsHediff>EVOR_Hediff_Sternum_NornCrown</addsHediff>
		<descriptionHyperlinks><ThingDef>EVOR_Item_Sternum_NornCrown</ThingDef><HediffDef>EVOR_Hediff_Sternum_NornCrown</HediffDef></descriptionHyperlinks>
	</RecipeDef>
	<RecipeDef ParentName="SurgeryRemoveImplantBase">
		<defName>EVOR_SurgeryRemove_Sternum_NornCrown</defName>
		<label>&lt;color=#00FFF7&gt;remove norn crown&lt;/color&gt;</label>
		<description>Remove norn crown.</description>
		<jobString>Removing norn crown.</jobString>
		<descriptionHyperlinks>
			<ThingDef>EVOR_Item_Sternum_NornCrown</ThingDef>
			<HediffDef>EVOR_Hediff_Sternum_NornCrown</HediffDef>
		</descriptionHyperlinks>
		<removesHediff>EVOR_Hediff_Sternum_NornCrown</removesHediff>
	</RecipeDef>

