<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<li>Dubs Bad Hygiene</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/HediffDef[contains(defName, "EVOR_Hediff_Kidney_")]/stages/li/statOffsets</xpath>
					<value>
						<ThirstRateMultiplier>-0.15</ThirstRateMultiplier>
					</value>
					<success>Always</success>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>




