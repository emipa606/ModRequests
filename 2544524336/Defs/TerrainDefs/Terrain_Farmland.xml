<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TerrainDef ParentName="NaturalTerrainBase">
    <defName>Farmland</defName>
    <label>farmland</label>
    <texturePath>Terrain/Surfaces/Farmland</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>270</renderPrecedence>
    <pathCost>3</pathCost>
	<layerable>true</layerable>
    <statBases>
	  <WorkToBuild>400</WorkToBuild>
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
    </statBases>
    <scatterType>Rocky</scatterType>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
	  <li>Diggable</li>
    </affordances>
    <generatedFilth>Filth_Dirt</generatedFilth>
    <fertility>1.4</fertility>
    <tags>
      <li>Floor</li>
    </tags>
    <designationCategory>Floors</designationCategory>
    <tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  <constructEffect>ConstructDirt</constructEffect>
  <terrainAffordanceNeeded>Tillable</terrainAffordanceNeeded>
  <designatorDropdown>Farmland</designatorDropdown>
  </TerrainDef>

