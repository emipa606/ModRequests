<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>Floors Are Light!</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/TerrainDef[@Name="WoodFoundationBase"]/modExtensions</xpath>
      <value>
        <li Class="FloorsAreLight.FloorsAreLightModExt">
          <foundationType>Wood</foundationType>
          <terrainAffordanceDefName>Bridgeable</terrainAffordanceDefName>
          <defaultTerrainDefName>Marsh</defaultTerrainDefName>
        </li>
      </value>
    </match>
  </Operation>
</Patch>