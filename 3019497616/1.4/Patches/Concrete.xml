<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>[RF] Concrete (Continued)</li>
      <li>Concrete (Continued)</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/TerrainDef[defName="LUConcreteFoundation"]/costList</xpath>
      <value>
        <costList>
          <RFFConcrete>1</RFFConcrete>
        </costList>
      </value>
    </match>
  </Operation>
  
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>Simple Concrete</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/TerrainDef[defName="LUConcreteFoundation"]/costList</xpath>
      <value>
        <costList>
          <D9Concrete>1</D9Concrete>
        </costList>
      </value>
    </match>
  </Operation>
</Patch>