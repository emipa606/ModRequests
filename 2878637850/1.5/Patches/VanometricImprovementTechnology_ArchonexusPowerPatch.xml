<?xml version="1.0" encoding="utf-8"?>
<!--This patches in support for the Archonexus Gives Power mod.-->
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationInsert" MayRequire="Ludeon.RimWorld.Ideology,SubPlusGre.Patch.ArchonexusPower">
				<xpath>Defs/ThingDef[defName="ArchonexusCore"]/comps/li[@Class = "CompProperties_Power"]/basePowerConsumption</xpath>
				<order>Append</order>
				<value>
					<powerUpgrades>
					<li>
						<researchProject>VanometricAdapters</researchProject>
						<factor>2.5</factor>
					</li>
					<li>
						<researchProject>VanometricConnectors</researchProject>
						<factor>2.0</factor>
					</li>
					</powerUpgrades>
