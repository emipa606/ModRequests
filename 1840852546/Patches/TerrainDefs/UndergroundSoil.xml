<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Soil"]</xpath>
        <value>
            <terrainAffordanceNeeded>SmoothableStone</terrainAffordanceNeeded>
            <designationCategory>Floors</designationCategory>
            <description>Soil, or dirt, is a perfect medium to grow plants in. Use this to pack dirt on top of rough-hewn stone to grow plants underground.</description>
            <constructEffect>ConstructDirt</constructEffect>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Soil"]/statBases</xpath>
        <value>
            <WorkToBuild>350</WorkToBuild>
        </value>
    </Operation>

</Patch>