        <li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
            <ThingDef ParentName="DankPyon_HideBaseLarge">
              <defName>DankPyon_Hide_TrollLight</defName>
              <label>large light troll hide</label>
              <graphicData>
                <texPath>Resources/HeavyFurLarge</texPath>
                <color>(86,77,64)</color>
              </graphicData>
              <statBases>
                <MarketValue>140</MarketValue>
              </statBases>
              <butcherProducts Inherit="False">
                <MorrowRim_Leather_LightTroll>52</MorrowRim_Leather_LightTroll>
              </butcherProducts>
              <stuffProps>
                <color>(86,77,64)</color>
              </stuffProps>
            </ThingDef>
          </value>
        </li>

      <li Class="PatchOperationAdd">
        <xpath>Defs/PawnKindDef [defName="MorrowRim_TrollBarren"]/lifeStages/li[3]</xpath>

