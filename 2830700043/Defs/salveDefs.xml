<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MedicineBase">
    <defName>MedicineMegabee</defName>
    <label>megabee tallow salve</label>
    <description>A salve produced from the fur and tallow of a Megabee. The antimicrobial properties of the tallow make it almost as effective as healroot, while being far more readily available if the colony has access to a megabee.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Medicine/MedicineHerbal</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
	  <color>(200,200,50)</color>
      <drawSize>0.95</drawSize>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <MarketValue>15</MarketValue>
      <Mass>0.35</Mass>
      <Flammability>1.3</Flammability>
      <MedicalPotency>0.55</MedicalPotency>
      <MedicalQualityMax>0.75</MedicalQualityMax>
      <DeteriorationRate>2</DeteriorationRate>
	  <WorkToMake>540</WorkToMake>
    </statBases>
	<costList>
      <MegabeeTallow>15</MegabeeTallow>
      <WoolMegabee>40</WoolMegabee>
    </costList>
	<recipeMaker>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
	    <li>CraftingSpot</li>
        <li>DrugLab</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>2</Crafting>
		<Animals>4</Animals>
        <Intellectual>2</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <tickerType>Rare</tickerType>
    <allowedArchonexusCount>20</allowedArchonexusCount>
  </ThingDef>

</Defs>