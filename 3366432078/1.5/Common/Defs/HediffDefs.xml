<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <HediffDef Name="RoomTemperaturesBase" Abstract = "True">
    <hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <everCurableByItem>false</everCurableByItem>
    <defaultLabelColor>(20, 255, 20)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_DisappearsOnDeath"/>
      <li>
        <compClass>SecondFloor.HediffComp_RemoveUponGettingUp</compClass>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="RoomTemperaturesBase">
    <defName>SF_RegularTemperature</defName>
    <label>Decent room</label>
    <description>I feel protected from the elements in this room.</description>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMin>-5</ComfyTemperatureMin>
          <ComfyTemperatureMax>5</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="RoomTemperaturesBase">
    <defName>SF_GoodTemperature</defName>
    <label>Good room</label>
    <description>This room is well insulated from the elements.</description>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMin>-10</ComfyTemperatureMin>
          <ComfyTemperatureMax>10</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="RoomTemperaturesBase">
    <defName>SF_WarmTemperature</defName>
    <label>Warm room</label>
    <description>It's easier to fend off the cold weather in this room.</description>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMin>-10</ComfyTemperatureMin>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="RoomTemperaturesBase">
    <defName>SF_ColdTemperature</defName>
    <label>Cool room</label>
    <description>It's easier to cool down in this room.</description>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMax>10</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>
