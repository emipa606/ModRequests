<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<ThingDef ParentName="TreeBase">
		<defName>RT_RubberTree</defName>
		<label>rubber tree</label>
		<description>A genetically modified species of the rubber tree, specifically manufactured to produce a sap that cures itself into rubber as it dries on contact with light. This rubber is naturally black due to the extremely high carbon content of the tree, which helps urbworlds with carbon emissions. The trees are also quite smaller than their wild counterparts, being able to grow indoors and not growing tall enough to block windmills.</description>
		<graphicData>
			<texPath>Things/Plant/Trees/RT_RubberTree</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.15, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<blockWind>false</blockWind>
		<statBases>
			<Beauty>2</Beauty>
			<BeautyOutdoors>2</BeautyOutdoors>
			<Nutrition>1.25</Nutrition>
		</statBases>
		<ingestible />
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<growDays>15</growDays>
			<visualSizeRange>0.8~2.0</visualSizeRange>
			<sowMinSkill>5</sowMinSkill>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.7</fertilityMin>
			<topWindExposure>0.05</topWindExposure>
			<mustBeWildToSow>false</mustBeWildToSow>
			<leaflessGraphicPath>Things/Plant/Trees/RT_RubberTree_Leafless</leaflessGraphicPath>
			<harvestWork>800</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestYield>20</harvestYield>
			<harvestedThingDef>RT_Rubber</harvestedThingDef>
			<harvestFailable>false</harvestFailable>
			<interferesWithRoof>false</interferesWithRoof>
			<harvestAfterGrowth>0.20</harvestAfterGrowth>
		</plant>
	</ThingDef>

</Defs>
