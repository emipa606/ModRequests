<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--tactics rifle 战术步枪-->
  <ThingDef ParentName="BaseMakeableGun">
    <defName>SZMechNeko_TacticsRifle</defName>
    <label>tactics rifle</label>
    <description>The rifle is equipped with a special auxiliary aiming device, which makes it easier to attack key parts. (33% chance to target head)</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>AutomechNeko/Equipment/TacticsRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>SZMechNeko_TacticsWeapon</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>SZMechNeko_NekoAssemblier</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>105000</WorkToMake>
      <Mass>2.3</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.48</AccuracyLong>
      <RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
      <Flammability>0.1</Flammability>
    </statBases>
    <costList>
      <SZMechNeko_ULAlloy>30</SZMechNeko_ULAlloy>
      <SZMechNeko_NekoComponent>2</SZMechNeko_NekoComponent>
      <SZMechNeko_NekoEar>7</SZMechNeko_NekoEar>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SZMechNekoTacticsRifle</defaultProjectile>
        <warmupTime>2.3</warmupTime>
        <range>31.9</range>
        <ticksBetweenBurstShots>9</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>24</power>
        <cooldownTime>1.3</cooldownTime>
        <armorPenetration>0.8</armorPenetration>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>24</power>
        <cooldownTime>1.3</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Flame</def>
            <amount>10.5</amount>
            <chance>0.75</chance>
          </li>
        </extraMeleeDamages>
        <armorPenetration>0.8</armorPenetration>
      </li>
    </tools>
    <weaponTags Inherit="False">
      <li>SZMechNekoTactics</li>
    </weaponTags>
    <smeltable>true</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
    <tradeability>Sellable</tradeability>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SZMechNekoTacticsRifle</defName>
    <label>tactics bullet</label>
    <thingClass>SZMechNeko.TacticsBullet</thingClass>
    <graphicData>
      <texPath>AutomechNeko/Equipment/Bullet_TacticsRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>9</damageAmountBase>
      <speed>145</speed>
      <stoppingPower>1.2</stoppingPower>
      <armorPenetrationBase>0.8</armorPenetrationBase>
      <extraDamages>
        <li>
          <def>EMP</def>
          <amount>5</amount>
          <armorPenetration>1.0</armorPenetration>
          <chance>0.6</chance>
        </li>
      </extraDamages>
    </projectile>
  </ThingDef>
  <!--tactics knife 战术军刀-->
  <ThingDef ParentName="BaseWeapon">
    <defName>SZMechNeko_TacticsKnife</defName>
    <label>tactics knife</label>
    <description>The knife is equipped with a special auxiliary aiming device, which makes it easier to attack key parts. (Ignore 25% melee dodge of target)</description>
    <statBases>
      <WorkToMake>105000</WorkToMake>
      <Mass>1</Mass>
      <Flammability>0.1</Flammability>
    </statBases>
    <techLevel>Ultra</techLevel>
    <soundInteract>Interact_BladelinkPlasmaSword</soundInteract>
    <meleeHitSound>MeleeHit_BladelinkPlasmaSword</meleeHitSound>
    <equippedAngleOffset>-50</equippedAngleOffset>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>AutomechNeko/Equipment/TacticsKnife</texPath>
    </graphicData>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>0.7</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>10</amount>
          </li>
        </extraMeleeDamages>
        <chanceFactor>0.1</chanceFactor>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>SZMechNeko_NoMissStab</li>
        </capacities>
        <power>20</power>
        <cooldownTime>1.5</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Burn</def>
            <amount>10</amount>
            <chance>1</chance>
            <armorPenetration>0.8</armorPenetration>
          </li>
          <li>
            <def>EMP</def>
            <amount>9</amount>
          </li>
        </extraMeleeDamages>
        <armorPenetration>0.8</armorPenetration>
        <chanceFactor>3</chanceFactor>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>SZMechNeko_NoMissCut</li>
        </capacities>
        <power>16</power>
        <cooldownTime>1.2</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Burn</def>
            <amount>10</amount>
            <chance>1</chance>
            <armorPenetration>0.6</armorPenetration>
          </li>
          <li>
            <def>EMP</def>
            <amount>9</amount>
          </li>
        </extraMeleeDamages>
        <armorPenetration>0.6</armorPenetration>
        <chanceFactor>3</chanceFactor>
      </li>
    </tools>
    <weaponTags Inherit="False">
      <li>SZMechNekoTactics</li>
    </weaponTags>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <smeltable>true</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <generateCommonality>0.4</generateCommonality>
    <tradeability>Sellable</tradeability>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>SZMechNeko_NekoAssemblier</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
      <researchPrerequisite>SZMechNeko_TacticsWeapon</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <SZMechNeko_ULAlloy>50</SZMechNeko_ULAlloy>
      <SZMechNeko_NekoComponent>1</SZMechNeko_NekoComponent>
      <SZMechNeko_NekoEar>9</SZMechNeko_NekoEar>
    </costList>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>
