<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--neko shield lite-->
  <ThingDef ParentName="ApparelBase">
    <defName>SZMechNeko_NekoShieldLite</defName>
    <label>neko shield lite</label>
    <description>A projectile-repulsion device. It will attempt to stop incoming projectiles or shrapnel, alse against melee attacks or heat.</description>
    <thingClass>SZMechNeko.NekoShieldLite</thingClass>
    <graphicData>
      <texPath>AutomechNeko/Apparel/NekoShieldLite</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <Mass>2</Mass>
      <WorkToMake>60000</WorkToMake>
      <Flammability>0.2</Flammability>
      <EnergyShieldRechargeRate>0.005</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>0.1</EnergyShieldEnergyMax>
      <EquipDelay>1</EquipDelay>
      <JumpRange>17.9</JumpRange>
      <SmokepopBeltRadius>3.9</SmokepopBeltRadius>
      <MarketValue>1300</MarketValue>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardMidFreq</li>
    </thingSetMakerTags>
    <costList>
      <SZMechNeko_ULAlloy>70</SZMechNeko_ULAlloy>
      <SZMechNeko_NekoEar>2</SZMechNeko_NekoEar>
      <SZMechNeko_NekoComponent>6</SZMechNeko_NekoComponent>
    </costList>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
      <researchPrerequisite>SZMechNeko_NekoShieldLite</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>SZMechNeko_NekoAssemblier</li>
      </recipeUsers>
      <useIngredientsForColor>false</useIngredientsForColor>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>SZNekoBeltDefense</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>4</maxCharges>
        <ammoDef>Chemfuel</ammoDef>
        <ammoCountToRefill>10</ammoCountToRefill>
        <baseReloadTicks>60</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <chargeNoun>Chemfuel</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
    <verbs>
      <li>
        <verbClass>Verb_Smokepop</verbClass>
        <label>pop smoke</label>
        <violent>false</violent>
        <hasStandardCommand>true</hasStandardCommand>
        <targetable>false</targetable>
        <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
        <onlyManualCast>True</onlyManualCast>
      </li>
    </verbs>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <tradeability>Sellable</tradeability>
  </ThingDef>
  <!--neko shield pro-->
  <ThingDef ParentName="ApparelBase">
    <defName>SZMechNeko_NekoShieldPro</defName>
    <label>neko shield pro</label>
    <description>A projectile-repulsion device. It will attempt to stop incoming projectiles or shrapnel, alse against melee attacks or heat.\n\nIt could be upgraded by using energe cube and neko core.</description>
    <thingClass>SZMechNeko.NekoShieldPro</thingClass>
    <graphicData>
      <texPath>AutomechNeko/Apparel/NekoShieldPro</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <Mass>2</Mass>
      <WorkToMake>120000</WorkToMake>
      <Flammability>0.2</Flammability>
      <EnergyShieldRechargeRate>0.002</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>0.05</EnergyShieldEnergyMax>
      <EquipDelay>1</EquipDelay>
      <MarketValue>4275</MarketValue>
    </statBases>
    <costList>
      <SZMechNeko_NekoShieldLite>1</SZMechNeko_NekoShieldLite>
      <SZMechNeko_NekoCore>1</SZMechNeko_NekoCore>
      <SZMechNeko_EnergyCube>50</SZMechNeko_EnergyCube>
    </costList>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
      <researchPrerequisite>SZMechNeko_NekoShieldPro</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>SZMechNeko_NekoAssemblier</li>
      </recipeUsers>
      <useIngredientsForColor>false</useIngredientsForColor>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>SZNekoBeltDefense</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>10</maxCharges>
        <ammoDef>SZMechNeko_EnergyCube</ammoDef>
        <ammoCountPerCharge>5</ammoCountPerCharge>
        <baseReloadTicks>60</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <chargeNoun>Energy</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
    <verbs>
      <li>
        <verbClass>SZMechNeko.Verb_ForcedActive</verbClass>
        <label>force active</label>
        <violent>false</violent>
        <hasStandardCommand>true</hasStandardCommand>
        <targetable>false</targetable>
        <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
        <onlyManualCast>True</onlyManualCast>
      </li>
      <li>
        <label>launch rail gun shell</label>
        <verbClass>Verb_LaunchProjectileStatic</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <onlyManualCast>True</onlyManualCast>
        <range>21.9</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <warmupTime>1.5</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>Bullet_SZMechNeko_GammaRailGun</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <tradeability>Sellable</tradeability>
  </ThingDef>
  <HediffDef>
    <defName>SZMechNeko_Invisibility</defName>
    <label>invisibility</label>
    <description>invisibility</description>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <!--<li Class="HediffCompProperties_Disappears"><showRemainingTime>True</showRemainingTime></li>-->
      <li Class="HediffCompProperties_DisappearsOnDeath" />
      <li Class="HediffCompProperties">
        <compClass>HediffComp_Invisibility</compClass>
      </li>
      <li Class="HediffCompProperties_RemoveIfApparelDropped" />
    </comps>
  </HediffDef>
</Defs>