<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Abstract="True" ParentName="BaseGunWithQuality" Name="SZMechNekoGun">
    <!--<menuHidden>True</menuHidden>-->
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <techLevel>Spacer</techLevel>
    <generateCommonality>0.5</generateCommonality>
    <relicChance>0</relicChance>
  </ThingDef>
  <!--NekoGamma-->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SZMechNeko_GammaRailGun</defName>
    <label>rail gun shell</label>
    <graphicData>
      <texPath>AutomechNeko/Projectile/LauncherShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(254,189,58)</color>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Flame</damageDef>
      <damageAmountBase>14</damageAmountBase>
      <speed>50</speed>
      <explosionRadius>1.9</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.27</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="SZMechNekoGun">
    <defName>SZMechNeko_GammaRailGun</defName>
    <label>gamma rail gun</label>
    <description>todo</description>
    <graphicData>
      <texPath>AutomechNeko/Equipment/InvisibleEuip</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1400</MarketValue>
      <Mass>10</Mass>
      <RangedWeapon_Cooldown>4.4</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SZMechNeko_GammaRailGun</defaultProjectile>
        <forcedMissRadius>3.5</forcedMissRadius>
        <ai_AvoidFriendlyFireRadius>4</ai_AvoidFriendlyFireRadius>
        <warmupTime>2.95</warmupTime>
        <range>26.9</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <!--<tools><li><label>barrel</label><capacities><li>Blunt</li></capacities><power>12.7</power><cooldownTime>2.3</cooldownTime></li></tools>-->
    <weaponTags>
      <li>SZMechNekoGamma</li>
    </weaponTags>
  </ThingDef>
  <!--NekoXi-->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SZMechNeko_XiPistol</defName>
    <label>xi pistol bullet</label>
    <graphicData>
      <texPath>AutomechNeko/Projectile/Bullet_XiPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="SZMechNekoGun">
    <defName>SZMechNeko_XiPistol</defName>
    <label>xi pistol</label>
    <description>todo</description>
    <graphicData>
      <texPath>AutomechNeko/Equipment/InvisibleEuip</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <MarketValue>800</MarketValue>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SZMechNeko_XiPistol</defaultProjectile>
        <warmupTime>0.05</warmupTime>
        <range>17.9</range>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>SZMechNekoXi</li>
    </weaponTags>
  </ThingDef>
  <!--NekoMegaMax-->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SZMechNeko_OmegaA</defName>
    <label>high-explosive shell</label>
    <graphicData>
      <texPath>Things/Projectile/LauncherShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(254,189,58)</color>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>40</speed>
      <damageDef>Bomb</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionRadius>1.6</explosionRadius>
      <flyOverhead>false</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
      <alwaysFreeIntercept>true</alwaysFreeIntercept>
    </projectile>
  </ThingDef>
