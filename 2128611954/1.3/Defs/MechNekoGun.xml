    </verbs>
    <!--<tools><li><label>barrel</label><capacities><li>Blunt</li></capacities><power>12.7</power><cooldownTime>2.3</cooldownTime></li></tools>-->
    <weaponTags>
      <li>SZMechNekoOmega</li>
    </weaponTags>
    <comps>
      <li Class="SZMechNeko.CompProperties_CountLimitWeapon">
        <countMax>20</countMax>
        <convertWeaponDef>SZMechNeko_GammaRailGun</convertWeaponDef>
      </li>
    </comps>
  </ThingDef>
</Defs>