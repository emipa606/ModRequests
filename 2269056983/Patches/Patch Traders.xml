<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Modifying Outlander Bulk Goods to sell only Kenshi animals -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/TraderKindDef[defName="Caravan_Outlander_BulkGoods"]/stockGenerators/li[@Class="StockGenerator_Animals"]</xpath>
		<value>
			<li Class="StockGenerator_Animals">
				<maxWildness>0.70</maxWildness>
					<tradeTagsSell>
						<li>KenshiAnimalFarm</li>
						<li>KenshiAnimalCommon</li>
					</tradeTagsSell>
					<tradeTagsBuy>
						<li>KenshiAnimalExotic</li>
					</tradeTagsBuy>
				<kindCountRange>1~1</kindCountRange>
				<countRange>1~2</countRange>
			</li>
		</value>
	</Operation>
	
