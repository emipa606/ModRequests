<Defs>
 
<ThingDef ParentName="AnimalThingBase">
    <defName>KenshiGarru</defName>
    <label>garru</label>
    <description>Garru are Herbivores commonly found around the deserted parts of the continent.</description>
    <statBases>
      <MoveSpeed>4</MoveSpeed>
      <MarketValue>400</MarketValue>
      <ComfyTemperatureMin>-55</ComfyTemperatureMin>
      <ComfyTemperatureMax>65</ComfyTemperatureMax>
      <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
      <ArmorRating_Heat>0.30</ArmorRating_Heat>
	  <MeatAmount>40</MeatAmount>
    </statBases>
    <tools>
      <li>
