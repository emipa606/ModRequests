        <capacities>
          <li>Scratch</li>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
      </li>
      <li>
        <label>left foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.8</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.7</chanceFactor>
      </li>
    </tools>
    <race>
	  <herdAnimal>true</herdAnimal>
      <body>KenshiQuadrupedAnimalWithHooves</body>
	  <herdMigrationAllowed>true</herdMigrationAllowed>
      <baseBodySize>2.1</baseBodySize>
      <baseHungerRate>1.0</baseHungerRate>
      <baseHealthScale>2</baseHealthScale>
      <foodType>VegetarianRoughAnimal, OmnivoreRoughAnimal</foodType>
      <leatherDef>Garru_Leather</leatherDef>
      <trainability>Simple</trainability>
	  <packAnimal>true</packAnimal>
      <gestationPeriodDays>25</gestationPeriodDays>
      <manhunterOnDamageChance>0.20</manhunterOnDamageChance>
      <wildness>0.4</wildness>
      <lifeExpectancy>30</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.3</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.6</minAge>
          <soundWounded>Pawn_Dromedary_Wounded</soundWounded>
          <soundDeath>Pawn_Dromedary_Death</soundDeath>
          <soundCall>Pawn_Dromedary_Call</soundCall>
          <soundAngry>Pawn_Dromedary_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>KenshiAnimalCommon</li>
	  <li>KenshiAnimalFarm</li>
    </tradeTags>
