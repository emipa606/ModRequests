<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
<ThingDef ParentName="AnimalThingBase">
    <defName>KenshiLeviathan</defName>
    <label>leviathan</label>
    <description>A towering beast of the wild with incredible integrity, they can crush an entire squad of men under their iron feet.</description>
    <statBases>
      <MoveSpeed>4</MoveSpeed>
      <MarketValue>6000</MarketValue>
      <ComfyTemperatureMin>-120</ComfyTemperatureMin>
      <ComfyTemperatureMax>110</ComfyTemperatureMax>
      <ArmorRating_Sharp>1.05</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.90</ArmorRating_Blunt>
      <ArmorRating_Heat>0.70</ArmorRating_Heat>
	  <MeatAmount>100</MeatAmount>
	  <PainShockThreshold>0.99</PainShockThreshold>
    </statBases>
    <tools>
      <li>
        <label>beak</label>
        <capacities>
          <li>Scratch</li>
          <li>Blunt</li>
        </capacities>
        <power>30</power>
        <cooldownTime>4</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>30</power>
        <cooldownTime>4.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>left foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>30</power>
        <cooldownTime>4</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>30</power>
        <cooldownTime>4</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>25</power>
        <cooldownTime>3.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
	  <herdAnimal>true</herdAnimal>
      <body>KenshiQuadrupedAnimalWithHooves</body>
	  <herdMigrationAllowed>false</herdMigrationAllowed>
      <baseBodySize>5</baseBodySize>
      <baseHungerRate>4.0</baseHungerRate>
      <baseHealthScale>15</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Leviathan</leatherDef>
      <trainability>Advanced</trainability>
      <gestationPeriodDays>120</gestationPeriodDays>
      <manhunterOnDamageChance>0.80</manhunterOnDamageChance>
	  <manhunterOnTameFailChance>1.00</manhunterOnTameFailChance>
      <wildness>0.985</wildness>
      <lifeExpectancy>150</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>1.0</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>3.0</minAge>
          <soundCall>Pawn_Thrumbo_Call</soundCall>
          <soundAngry>Pawn_Thrumbo_Angry</soundAngry>
          <soundWounded>Pawn_Thrumbo_Pain</soundWounded>
          <soundDeath>Pawn_Thrumbo_Death</soundDeath>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>KenshiAnimalExotic</li>
    </tradeTags>
	<butcherProducts>
      <LeviathanPearl>1</LeviathanPearl>
    </butcherProducts>
  </ThingDef>

