      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Crab/Crab</texPath>
          <drawSize>2.0</drawSize>
		  <color>(160,165,160)</color>
          <shadowData>
            <volume>(0.7, 0.6, 0.4)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Crab/Dessicated_Crab</texPath>
          <drawSize>2.0</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Crab/Crab</texPath>
          <drawSize>3.0</drawSize>
          <shadowData>
            <volume>(1, 0.8, 0.5)</volume>
            <offset>(0,0,-0.5)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Crab/Dessicated_Crab</texPath>
          <drawSize>3.0</drawSize>
		  <color>(150,150,150)</color>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
 
</Defs>