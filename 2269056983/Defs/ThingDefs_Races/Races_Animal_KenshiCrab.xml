    <race>KenshiCrab</race>
    <combatPower>200</combatPower>
    <ecoSystemWeight>0.6</ecoSystemWeight>
	<wildGroupSize>
      <min>1</min>
      <max>3</max>
	</wildGroupSize>
    <lifeStages>
      <li>
        <label>Baby Crab</label>
        <labelPlural>Baby Crabs</labelPlural>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Crab/Crab</texPath>
          <drawSize>1.0</drawSize>
		  <color>(180,185,180)</color>
          <shadowData>
            <volume>(0.4, 0.3, 0.3)</volume>
            <offset>(0,0,-0.2)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Crab/Dessicated_Crab</texPath>
          <drawSize>1.0</drawSize>
