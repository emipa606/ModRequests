<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
<ThingDef ParentName="AnimalThingBase">
    <defName>KenshiPackBull</defName>
    <label>packbull</label>
    <description>A large domesticated ungulate, Pack Bulls have been bred for millennia to produce huge amounts of milk, meat, and leather. They are exceptionally testy creatures and will always seek revenge Most of them are so adapted to farm life that they cannot survive in the wild.</description>
    <statBases>
      <MoveSpeed>3.2</MoveSpeed>
      <ComfyTemperatureMin>-40</ComfyTemperatureMin>
	  <ComfyTemperatureMax>45</ComfyTemperatureMax>
	  <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Heat>0.15</ArmorRating_Heat>
      <MarketValue>300</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>15</milkAmount>
      </li>
    </comps>
    <tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
    </tools>
    <race>
      <body>KenshiQuadrupedAnimalWithHooves</body>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>2.0</baseBodySize>
      <baseHungerRate>0.85</baseHungerRate>
      <baseHealthScale>1.5</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Packbull_Leather</leatherDef>
      <wildness>0.05</wildness>
      <trainability>Simple</trainability>
	  <packAnimal>true</packAnimal>
      <gestationPeriodDays>20</gestationPeriodDays>
      <lifeExpectancy>22</lifeExpectancy>
      <manhunterOnDamageChance>0.15</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.45</minAge>
          <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
          <soundDeath>Pawn_Muffalo_Death</soundDeath>
          <soundCall>Pawn_Muffalo_Call</soundCall>
          <soundAngry>Pawn_Muffalo_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>KenshiAnimalCommon</li>
      <li>KenshiAnimalFarm</li>
    </tradeTags>
  </ThingDef>

