<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="AnimalThingBase">
    <defName>KenshiBonedog</defName>
    <label>bonedog</label>
    <description>Bonedogs are canine-like creatures which roam the wastes in large packs. They are fairly hostile when other inhabitants of the world roam into their territory.</description>
    <statBases>
      <MoveSpeed>5.0</MoveSpeed>
      <MarketValue>450</MarketValue>
      <ComfyTemperatureMin>-55</ComfyTemperatureMin>
      <ComfyTemperatureMax>65</ComfyTemperatureMax>
	  <PainShockThreshold>0.75</PainShockThreshold>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>13</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>13</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>razorfangs</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.9</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.6</chanceFactor>
      </li>
    </tools>
    <race>
	  <herdAnimal>true</herdAnimal>
      <body>KenshiQuadrupedAnimalWithPawsAndTail</body>
	  <herdMigrationAllowed>true</herdMigrationAllowed>
      <predator>true</predator>
      <maxPreyBodySize>2.3</maxPreyBodySize>
      <petness>0.5</petness>
      <baseBodySize>1.0</baseBodySize>
      <baseHungerRate>0.25</baseHungerRate>
      <baseHealthScale>1.6</baseHealthScale>
      <foodType>CarnivoreAnimalStrict, OmnivoreRoughAnimal</foodType>
      <leatherDef>Bonedog_Leather</leatherDef>
      <gestationPeriodDays>20</gestationPeriodDays>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
      <wildness>0.50</wildness>
      <manhunterOnTameFailChance>0.15</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.35</manhunterOnDamageChance>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(2.5, 0.7)</li>
          <li>(3, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>15</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.3</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.6</minAge>
          <soundWounded>Pawn_Warg_Wounded</soundWounded>
          <soundDeath>Pawn_Warg_Death</soundDeath>
          <soundCall>Pawn_Warg_Call</soundCall>
          <soundAngry>Pawn_Warg_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>KenshiAnimalUncommon</li>
      <li>KenshiAnimalFighter</li>
    </tradeTags>
  </ThingDef>
  
  <PawnKindDef ParentName="AnimalKindBase">
    <defName>KenshiBonedog</defName>
    <label>bonedog</label>
    <race>KenshiBonedog</race>
	<canArriveManhunter>true</canArriveManhunter>
    <combatPower>100</combatPower>
    <ecoSystemWeight>0.5</ecoSystemWeight>
	<wildGroupSize>
      <min>2</min>
      <max>4</max>
	</wildGroupSize>
    <lifeStages>
      <li>
        <label>bonedog puppy</label>
        <labelPlural>bonedog puppies</labelPlural>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Bonedog/Bonedog</texPath>
          <drawSize>1.05</drawSize>
          <color>(150,150,150)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Bonedog/Dessicated_Bonedog</texPath>
          <drawSize>1.05</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Bonedog/Bonedog</texPath>
          <drawSize>1.7</drawSize>
          <color>(150,150,150)</color>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Bonedog/Dessicated_Bonedog</texPath>
          <drawSize>1.7</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Bonedog/Bonedog</texPath>
          <drawSize>2.05</drawSize>
          <color>(150,150,150)</color>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Bonedog/Dessicated_Bonedog</texPath>
          <drawSize>2.05</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
 </Defs>