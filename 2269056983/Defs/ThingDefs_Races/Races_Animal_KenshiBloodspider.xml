<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
<ThingDef ParentName="AnimalThingBase">
    <defName>KenshiBloodspider</defName>
    <label>bloodspider</label>
    <description>Blood Spiders hunt down and suck the nutrition of live prey. They attack in groups and are more dangerous than, say, an average group of skeleton bandits. Blood Spiders are highly resistant to bleeding damage and recover consciousness quickly. They will try to eat an unconscious or dying character.</description>
    <statBases>
      <MoveSpeed>6.0</MoveSpeed>
      <MarketValue>100</MarketValue>
      <ComfyTemperatureMin>10</ComfyTemperatureMin>
      <ComfyTemperatureMax>95</ComfyTemperatureMax>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Heat>0.10</ArmorRating_Heat>
	  <LeatherAmount>0</LeatherAmount>
	  <MeatAmount>5</MeatAmount>
	  <PainShockThreshold>0.90</PainShockThreshold>
    </statBases>
    <tools>
      <li>
        <label>head claw</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
	<comps>
      <li Class="CompProperties_EggLayer">
	    <eggUnfertilizedDef>EggBloodspiderUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggBloodspiderFertilized</eggFertilizedDef>
		<eggFertilizationCountMax>1</eggFertilizationCountMax>
		<eggLayIntervalDays>3</eggLayIntervalDays>
        <eggCountRange>
          <min>1</min>
          <max>3</max>
        </eggCountRange>
      </li>
    </comps>
    <race>
	  <fleshType>Insectoid</fleshType>
	  <bloodDef>Filth_BloodInsect</bloodDef>
	  <meatColor>(232,146,146)</meatColor>
	  <useMeatFrom>Megaspider</useMeatFrom>
	  <herdAnimal>true</herdAnimal>
      <body>KenshiBeetleLikeWithClaw</body>
	  <herdMigrationAllowed>true</herdMigrationAllowed>
	  <predator>true</predator>
	  <maxPreyBodySize>1.2</maxPreyBodySize>
      <baseBodySize>1.3</baseBodySize>
      <baseHungerRate>1.2</baseHungerRate>
      <baseHealthScale>0.45</baseHealthScale>
      <foodType>CarnivoreAnimalStrict</foodType>
      <leatherDef>Leather_Patch</leatherDef>
      <trainability>None</trainability>
      <wildness>0.985</wildness>
      <lifeExpectancy>20</lifeExpectancy>
	  <manhunterOnTameFailChance>1.00</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1.00</manhunterOnDamageChance>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>1.0</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>2.0</minAge>
          <soundWounded>Pawn_Spelopede_Pain</soundWounded>
          <soundDeath>Pawn_Spelopede_Death</soundDeath>
          <soundCall>Pawn_Spelopede_Call</soundCall>
          <soundAngry>Pawn_Spelopede_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
	  <li>KenshiAnimalInsect</li>
    </tradeTags>
  </ThingDef>

