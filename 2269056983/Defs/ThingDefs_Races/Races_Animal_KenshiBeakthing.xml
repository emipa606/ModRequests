        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <race>
	  <fleshType>Insectoid</fleshType>
	  <bloodDef>Filth_BloodInsect</bloodDef>
	  <meatColor>(232,199,146)</meatColor>
	  <useMeatFrom>Megaspider</useMeatFrom>
	  <herdAnimal>true</herdAnimal>
      <body>KenshiQuadrupedAnimalWithHooves</body>
	  <herdMigrationAllowed>true</herdMigrationAllowed>
	  <predator>true</predator>
	  <maxPreyBodySize>3.0</maxPreyBodySize>
      <baseBodySize>4</baseBodySize>
      <baseHungerRate>1.2</baseHungerRate>
      <baseHealthScale>4.0</baseHealthScale>
      <foodType>CarnivoreAnimalStrict</foodType>
      <leatherDef>Leather_Patch</leatherDef>
      <trainability>Simple</trainability>
      <wildness>0.985</wildness>
      <lifeExpectancy>150</lifeExpectancy>
	  <manhunterOnTameFailChance>1.00</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1.00</manhunterOnDamageChance>
      <lifeStageAges>
