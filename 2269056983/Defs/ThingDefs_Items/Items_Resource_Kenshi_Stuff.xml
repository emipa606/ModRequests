<Defs>

  <!--========== Basic leathers ============-->

  <ThingDef ParentName="LeatherBase">
    <defName>Garru_Leather</defName>
    <label>garru leather</label>
	<description>A brown leathery pelt harvested from a garru. It offers a little insulation.</description>
    <graphicData>
      <color>(162,106,57)</color>
    </graphicData>
	<statBases>
      <MarketValue>2.0</MarketValue>
      <StuffPower_Armor_Sharp>.15</StuffPower_Armor_Sharp>
      <StuffPower_Insulation_Cold>5</StuffPower_Insulation_Cold>
	  <StuffPower_Insulation_Heat>5</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(162,106,57)</color>
      <commonality>0.2</commonality>
    </stuffProps>
  </ThingDef>


  <ThingDef ParentName="LeatherBase">
