<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseRangedWeapon_Kenshi">
    <defName>Kenshi_JunkBow</defName>
    <label>junk bow</label>
    <description>A cheap and lightweight weapon. It's not very powerful, but it can be used to spray an opponent with bolts at close range.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/KenshiJunkBow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Small</soundInteract>
    <statBases>
      <MarketValue>150</MarketValue>
      <Mass>0.8</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>KenshiRangedBasic</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>KenshiJunkBowBolt</defaultProjectile>
        <warmupTime>1.35</warmupTime>
        <range>22.9</range>
        <soundCast>Bow_Small</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>KenshiJunkBowBolt</defName>
    <label>junk bow bolt</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>11</damageAmountBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  
  
</Defs>


