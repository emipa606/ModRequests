<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseMeleeWeapon_Kenshi">
    <defName>Kenshi_FragmentAxe</defName>
    <label>fragment axe</label>
    <description>A fragment Axe is a heavy weapon and as a result it takes a long time to swing. Very few men can stand up to such a mighty weapon. The capacitors in the blade discharge EMP damage upon edge strikes.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/KenshiFragAxeEMP</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.1</uiIconScale>
    <weaponTags>
      <li>KenshiMeleeAdvanced</li>
	  <li>KenshiFragmentAxe</li>
    </weaponTags>
    <statBases>
	  <MarketValue>2000</MarketValue>
      <Mass>10.0</Mass>
    </statBases>
    <equippedAngleOffset>-20</equippedAngleOffset>
	<equippedStatOffsets>
      <MoveSpeed>-0.35</MoveSpeed>
    </equippedStatOffsets>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>21</power>
        <cooldownTime>1.6</cooldownTime>
        <armorPenetration>0.3</armorPenetration>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>53</power>
        <cooldownTime>4</cooldownTime>
        <armorPenetration>0.9</armorPenetration>
		<extraMeleeDamages>
          <li>
            <def>EMP</def>
            <amount>6</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
  </ThingDef>

</Defs>
