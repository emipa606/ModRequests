<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="TableGatherSpotBase">
		<defName>TableShortModular</defName>
		<label>Modular Table</label>
		<uiIconPath>Tables/table_menuicon</uiIconPath>
		<graphicData>
			<texPath>Tables/tablelink</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
  			<linkFlags>
  				<li>Custom1</li>
			</linkFlags>
		</graphicData>	
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>375</WorkToBuild>
			<Mass>3</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>0.25</Beauty>
		</statBases>
		<size>(1,1)</size>
		<costStuffCount>14</costStuffCount>
		<rotatable>false</rotatable>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<building>
			<blueprintGraphicData>
				<texPath>Tables/tablelink_blueprint</texPath>
			</blueprintGraphicData>
		</building>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
	</ThingDef>
	
	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>StoolLinkable</defName>
		<label>Modular stool</label>
		<uiIconPath>Tables/chair_menuicon</uiIconPath>
		<graphicData>
			<texPath>Tables/chairlink</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom2</li>
			</linkFlags>
			<shadowData>
				<volume>(0.3, 0.3, 0.6)</volume>
			</shadowData>
		</graphicData>
		<socialPropernessMatters>true</socialPropernessMatters>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToBuild>450</WorkToBuild>
			<Mass>3</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>0</Beauty>
			<Comfort>0.5</Comfort>
		</statBases>
		<description>People sit here.</description>
		<size>(1,1)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<pathCost>30</pathCost>
		<designationCategory>Furniture</designationCategory>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<fillPercent>0.20</fillPercent>
		<neverMultiSelect>true</neverMultiSelect>
		<building>
			<isSittable>true</isSittable>
			<blueprintGraphicData>
				<texPath>Tables/chairlink_blueprint</texPath>
			</blueprintGraphicData>
		</building>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>