<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<ThingDef ParentName="BaseWeapon">
 		<thingClass>ThingWithComps</thingClass>
 		<defName>AW_ArchotechSword</defName>
 		<label>archotech sword</label>
 		<description>A sword-like melee weapon crafted by a mysterious archotech. This sword's blade is composed of an unknown material that seems to be able to intelligently modify its molecular  properties to cut and pierce through any material that the user slashes it onto.</description>
 		<graphicData>
 			<texPath>Things/Weapons/AW_ArchotechSword</texPath>
 			<graphicClass>Graphic_Single</graphicClass>
 			<drawSize>1</drawSize>
 		</graphicData>
    <meleeHitSound>AW_SwordLight</meleeHitSound>
 		<techLevel>Archotech</techLevel>
 		<thingCategories>
      		<li>WeaponsMelee</li>
    	</thingCategories>
		<weaponClasses>
			<li>Melee</li>
		</weaponClasses>
		<weaponTags>
			<li>MeleeArchotech</li>
		</weaponTags>
		<comps>
		<li Class="ArchotechWeaponry.Comps.CompProperties_ArchotechWeapon">
			<SelfNecrosisSeverity>0.25</SelfNecrosisSeverity>
		</li>
		</comps>
		<modExtensions>
			<li Class="ArchotechWeaponry.Defs.ArchotechDamageExtension">
			<nonLethalHediffToApplyOnOrganics>VoidToxin</nonLethalHediffToApplyOnOrganics>
			<nonLethalSeverityPerHit>0.15</nonLethalSeverityPerHit>
			<lethalHediffToApplyOnOrganics>VoidNecrosisTemp</lethalHediffToApplyOnOrganics>
			<lethalSeverityPerHit>0.10</lethalSeverityPerHit>
			</li>
		</modExtensions>
    	<relicChance>1</relicChance>
 		<statBases>
 			<MarketValue>2400</MarketValue>
 			<Mass>2</Mass>
 			<MeleeWeapon_AverageArmorPenetration>0.95</MeleeWeapon_AverageArmorPenetration>
 		</statBases>
 		<tools>
 			<li>
 				<label>handle</label>
 				<capacities>
 					<li>Blunt</li>
 				</capacities>
 				<power>12</power>
 				<cooldownTime>1.6</cooldownTime>
 			</li>
 			<li>
 				<label>point</label>
 				<capacities>
 					<li>Stab</li>
 				</capacities>
 				<power>25</power>
 				<cooldownTime>1.7</cooldownTime>
 			</li>
 			<li>
 				<label>blade</label>
 				<capacities>
 					<li>Cut</li>
 				</capacities>
 				<power>25</power>
 				<cooldownTime>1.7</cooldownTime>
 			</li>
 		</tools>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<inspectorTabs>
      		<li>ITab_Art</li>
    	</inspectorTabs>
 	</ThingDef>

