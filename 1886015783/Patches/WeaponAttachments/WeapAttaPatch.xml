<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Edits made by Pet Mudstone! -->

    <Operation Class="PatchOperationFindMod">
        <mods>
          <li>[1.0] Weapon Attachments</li>
        </mods>
		
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <!-- general verb patching -->
                <li Class="PatchOperationReplace">
                    <xpath>*/ThingDef[defName="Gun_PumpShotgun_Bayonet" or defName="Gun_ChainShotgun_Grip"]/verbs/li/verbClass</xpath>
                    <value>
                        <verbClass>ProperShotguns.Verb_ShootShotgun</verbClass>
                    </value>
                </li>
				
				<!-- ===== Both shotguns use vanilla blasts. ===== -->

            </operations>
        </match>
    </Operation>

</Patch>