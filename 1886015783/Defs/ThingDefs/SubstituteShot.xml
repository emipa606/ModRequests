<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Exists in order to replace the ammo for the sawn-off versions of the IZH-43, TOZ63, and VG Bentley from Sports Shotgun Series.-->

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_12_Gauge_Double</defName>
		<label>12 Gauge buckshot blast</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<!-- Damage Doubled -->
			<damageAmountBase>40</damageAmountBase>
			<stoppingPower>3</stoppingPower>
			<armorPenetrationBase>0.14</armorPenetrationBase>
			<speed>88</speed>
		</projectile>
		<!-- Pellets -->
		<modExtensions>
            <li Class="ProperShotguns.ShotgunExtension">
                <pelletCount>12</pelletCount>
            </li>
        </modExtensions>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_16_Gauge_Double</defName>
