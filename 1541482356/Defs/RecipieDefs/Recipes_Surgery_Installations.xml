	<RecipeDef ParentName="SurgeryFlesh">
		<defName>MM_InstallThermalCore</defName>
		<label>install thermal core</label>
		<description>Install a thermal core.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing thermal core.</jobString>
		<workAmount>2000</workAmount>
		<skillRequirements>
			<Medicine>5</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>MM_ThermalLance_ThermalCore</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
		<thingDefs>
			<li>MM_ThermalLance_ThermalCore</li>
		</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Heart</li>
			<li>InsectHeart</li>
		</appliedOnFixedBodyParts>
		<addsHediff>MM_ThermalLance_ThermalCore</addsHediff>
		<recipeUsers>
			<li>Human</li>
			<li>MM_PolarColossus</li>
		</recipeUsers>
	</RecipeDef>
	
