<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Added body parts -->
	
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>MM_ThermalLanceAssembly</defName>
		<label>thermal lance assembly</label>
		<labelNoun>a thermal lance assembly</labelNoun>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
		    <li Class="HediffCompProperties_VerbGiver">
				<verbs>
					<li>
						<label>thermal lance</label>
						<verbClass>VerbExpansionFramework.VEF_Verb_ShootBody</verbClass>
						<accuracyTouch>0.7</accuracyTouch>
						<accuracyShort>0.8</accuracyShort>
						<accuracyMedium>0.9</accuracyMedium>
						<accuracyLong>0.85</accuracyLong>
						<hasStandardCommand>true</hasStandardCommand>
						<defaultProjectile>MM_ThermalLanceProjectile</defaultProjectile>
						<warmupTime>2.3</warmupTime>
						<defaultCooldownTime>1.9</defaultCooldownTime>
						<minRange>6</minRange>
						<range>32.9</range>
						<soundCast>ChargeLance_Fire</soundCast>
						<soundCastTail>GunTail_Light</soundCastTail>
						<muzzleFlashScale>12</muzzleFlashScale>
					</li>
				</verbs>
		    </li>
		</comps>
    </HediffDef>
	
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>MM_ThermalLanceAssemblyIncomplete</defName>
		<label>thermal lance assembly (incomplete)</label>
		<labelNoun>a thermal lance assembly</labelNoun>
		<hediffClass>HediffWithComps</hediffClass>
    </HediffDef>
	
</Defs>