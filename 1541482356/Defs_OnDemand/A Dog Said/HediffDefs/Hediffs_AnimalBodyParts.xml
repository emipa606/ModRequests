<Defs>

	<HediffDef ParentName="addedPartAnimal">
		<defName>MM_ADS_SimpleProstheticTentacleAnimal</defName>
		<label>simple prosthetic animal tentacle</label>
		<defaultLabelColor>(233,129,69)</defaultLabelColor>
		<addedPartProps>
			<partEfficiency>0.8</partEfficiency>
			<solid>false</solid>
			<betterThanNatural>false</betterThanNatural>
		</addedPartProps>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>simple prosthetic tentacle</label>
						<capacities>
						  <li>Blunt</li>
						</capacities>
						<power>6</power>
						<cooldownTime>0.8</cooldownTime>
						<surpriseAttack>
						  <extraMeleeDamages>
							<li>
							  <def>Crush</def>
							  <amount>13</amount>
							</li>
