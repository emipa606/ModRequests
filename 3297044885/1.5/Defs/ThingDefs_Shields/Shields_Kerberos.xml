<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorSmithableBase">
        <defName>Apparel_Kerberos_WristShield</defName>
        <label>kerberos wrist shield</label>
        <techLevel>Industrial</techLevel>
		<description>A protective gear worn from the left wrist of the wearer, allowing them to protect themselves all while never impeding their ability to wield a heavy weapon like the MG 42 and the likes. This gear is the standard apparel used by the members of kerberos.</description>
		<graphicData>
            <texPath>Things/Apparels/RiotShield/Wrist_Shield</texPath>
            <graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.2</drawSize>
        </graphicData>
        <thingCategories>
            <li>Shield</li>
        </thingCategories>
        <possessionCount>1</possessionCount>
		<costList>
          <Steel>50</Steel>
		  <Plasteel>25</Plasteel>
		  <Cloth>25</Cloth>
        </costList>
        <apparel>		   
            <developmentalStageFilter>Child, Adult</developmentalStageFilter>          
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <bodyPartGroups>
                <li>LeftHand</li>
                <li>Arms</li>
				<li>Torso</li>
				<li>Hands</li>
            </bodyPartGroups>
            <layers>
                <li>Middle</li>
            </layers>
        </apparel>
        <statBases>
	      <MarketValue>500</MarketValue>
          <WorkToMake>4000</WorkToMake>
          <MaxHitPoints>100</MaxHitPoints>
          <Mass>1.2</Mass>
          <Flammability>0</Flammability>
          <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
          <ArmorRating_Heat>0.30</ArmorRating_Heat>
          <Insulation_Cold>0</Insulation_Cold>
          <Insulation_Heat>0</Insulation_Heat>
        </statBases>
        <smeltable>true</smeltable>	
        <recipeMaker>
          <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
          <researchPrerequisite>PanzerCopProtectGears</researchPrerequisite>
          <skillRequirements>
            <Crafting>4</Crafting>
          </skillRequirements>
          <recipeUsers Inherit="False">
            <li>FabricationBench</li>
          </recipeUsers>
		</recipeMaker>  
        <tradeTags>
            <li>Armor</li>
        </tradeTags>
    </ThingDef>

