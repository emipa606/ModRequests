<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Mauser C96 -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_Mauser</defName>
    <label>Mauser C96</label>
    <description>The Mauser C96 is a semi-automatic pistol that was originally produced by German arms manufacturer Mauser from 1896 to 1937.\n\nThis weapon is commonly used by members of kerberos as their trusty sidearm.</description>
    <graphicData>
      <texPath>Things/Weapons/Mauser_C96</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<techLevel>Industrial</techLevel>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Interact_Mauser</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PanzerCopBasicWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>405</displayPriority>
    </recipeMaker>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <statBases>
	  <MarketValue>500</MarketValue>
      <WorkToMake>5000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.42</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Mauser</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>25.9</range>
        <soundCast>Shot_Mauser</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	<modExtensions>
      <li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
                <def>MF_StandardMuzzleFalsh</def>
                <drawSize>(1,1)</drawSize>
                <offsets>
                    <li>(0.40,0.02)</li>
                </offsets>
       </li>	   
	</modExtensions>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Mauser</defName>
    <label>mauser bullet</label>
    <graphicData>
      <texPath>Things/Misc/Bullets/Projectile_Bullet_Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
	  <drawSize>1.3</drawSize>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  
  <!-- STG 44 -->
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_STG_Rifle</defName>
    <label>STG 44</label>
    <description>The StG 44 is a German assault rifle developed during World War II by Hugo Schmeisser. It is also known by its early designations as the MP 43 and MP 44. The StG 44 was an improvement of an earlier design, the Maschinenkarabiner 42.\n\nMembers of kerberos were seen using this weapon as their go-to rifle.</description>
    <graphicData>
      <texPath>Things/Weapons/STG_44</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<techLevel>Industrial</techLevel>
    <soundInteract>Interact_Rifle</soundInteract>
	<equippedAngleOffset>45</equippedAngleOffset>
	<equippedDistanceOffset>0.10</equippedDistanceOffset>
    <recipeMaker>
      <researchPrerequisite>PanzerCopBasicWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
	  <MarketValue>700</MarketValue>
      <WorkToMake>40000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.63</AccuracyTouch>
      <AccuracyShort>0.73</AccuracyShort>
      <AccuracyMedium>0.68</AccuracyMedium>
      <AccuracyLong>0.58</AccuracyLong>
      <RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_STGRifle</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>30.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>Shot_STG44</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>AssaultRifle</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	<modExtensions>
      <li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
                <def>MF_StandardMuzzleFalsh</def>
                <drawSize>(1,1)</drawSize>
                <offsets>
                    <li>(0.50,0.02)</li>
                </offsets>
       </li>	   
	</modExtensions>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_STGRifle</defName>
    <label>Bullet</label>
    <graphicData>
      <texPath>Things/Misc/Bullets/Projectile_Bullet_Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
	  <drawSize>1.3</drawSize>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>11</damageAmountBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  
  <!-- Grenade Launcher Pistol -->
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_GrenadePistol</defName>
    <label>Grenade Launcher Pistol</label>
    <description>A hand held grenade launcher used by members of kerberos, capable of launching a 40mm grenade projectile and causing a localized explosion that harms anything within its radius.</description>
    <graphicData>
      <texPath>Things/Weapons/Grenade_Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<techLevel>Industrial</techLevel>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Interact_Mauser</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PanzerCopGrenadeLauncherPistol</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>405</displayPriority>
    </recipeMaker>
    <weaponTags>
      <li>GunHeavy</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <statBases>
	  <MarketValue>500</MarketValue>
      <WorkToMake>40000</WorkToMake>
      <Mass>1.5</Mass>
      <AccuracyTouch>0.63</AccuracyTouch>
      <AccuracyShort>0.73</AccuracyShort>
      <AccuracyMedium>0.68</AccuracyMedium>
      <AccuracyLong>0.58</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_GrenadePistol</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>25.9</range>
		<forcedMissRadius>0.3</forcedMissRadius>
		<minRange>2.9</minRange>
		<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
		<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <soundCast>Shot_GrenadePistol</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
		<targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	<modExtensions>
      <li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
                <def>MF_StandardMuzzleFalsh</def>
                <drawSize>(1,1)</drawSize>
                <offsets>
                    <li>(0.40,0.02)</li>
                </offsets>
       </li>	   
	</modExtensions>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_GrenadePistol</defName>
    <label>Grenade Bullet</label>
	<thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Misc/Bullets/Projectile_Grenade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
	  <drawSize>1.3</drawSize>
    </graphicData>
    <projectile>
      <damageDef>Bomb</damageDef>
      <explosionRadius>1.9</explosionRadius>
	  <arcHeightFactor>0.5</arcHeightFactor>
      <shadowSize>0.4</shadowSize>
      <speed>75</speed>
    </projectile>
  </ThingDef>

</Defs>