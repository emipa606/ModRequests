<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!-- Heavy Weapons -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_JinRoh_MG</defName>
	<techLevel>Industrial</techLevel>
    <label>MG 42</label>
    <description>The MG 42 is a German recoil-operated air-cooled general-purpose machine gun used extensively by the Wehrmacht and the Waffen-SS during the second half of World War II.\n\nIn order to compensate a fully armored kerberos unit's lack of mobility, they were granted with overwhelming firepower with the use of an MG 42.</description>
    <graphicData>
      <texPath>Things/Weapons/MG42</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.3</drawSize>
    </graphicData>
	<thingCategories>
        <li>TwoHandedWeapon</li>
    </thingCategories>
	<modExtensions>
      <li Class="VFECore.ThingDefExtension" MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
			<weaponDraftedDrawOffsets>
				<north>
					<drawOffset>(0.10,0,0)</drawOffset>
					<angleOffset>-35</angleOffset>
				</north>
				<east>
					<drawOffset>(0.10,0,0)</drawOffset>
					<angleOffset>-35</angleOffset>
				</east>
				<south>
					<drawOffset>(0.10,0,0)</drawOffset>
					<angleOffset>-35</angleOffset>
				</south>
				<west>
					<drawOffset>(-0.10,0,0)</drawOffset>
					<angleOffset>35</angleOffset>
				</west>
			</weaponDraftedDrawOffsets>		
	   </li>
      <li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
                <def>MF_StandardMuzzleFalshThree</def>
                <drawSize>(1,1)</drawSize>
                <offsets>
                    <li>(0.83,0.02)</li>
                </offsets>
       </li>	   
	</modExtensions>
    <soundInteract>Interact_MachineGun</soundInteract>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
	<weaponTags>
      <li>GunHeavy</li>
    </weaponTags>
	<equippedAngleOffset>45</equippedAngleOffset>
	<equippedDistanceOffset>0.20</equippedDistanceOffset>
    <recipeMaker>
      <researchPrerequisite>PanzerCopHeavyWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>445</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
	  <MarketValue>2000</MarketValue>
      <WorkToMake>60000</WorkToMake>
      <Mass>4.5</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.50</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.30</AccuracyLong>
      <RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>95</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
    </costList>
    <verbs>
	  <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MG</defaultProjectile>
        <warmupTime>1.8</warmupTime>
        <range>28.9</range>
        <burstShotCount>8</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>Shot_MachineGun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
