<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef Name="VBY_ShrineBase" ParentName="BuildingBase" Abstract="True">
    <designationCategory>Misc</designationCategory>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.70</fillPercent>
	<canBeUsedUnderRoof>false</canBeUsedUnderRoof>
    <stuffCategories>
      <li>Stony</li>
	  <li>Woody</li>
    </stuffCategories>
    <canOverlapZones>true</canOverlapZones>  <!-- Try True  -->
    <pathCost>0</pathCost>
    <rotatable>true</rotatable>
    <castEdgeShadows>false</castEdgeShadows>
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
        <minQualityForArtistic>Awful</minQualityForArtistic>
        <canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
    </comps>
	<placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

  <ThingDef ParentName="VBY_ShrineBase">
    <defName>VBY_ShintoShrine</defName>
    <label>torii shinto shrine</label>
    <description>A symbolic gate for passing through to the realm of sacred things.</description>
    <size>(6,2)</size>
    <statBases>
      <MaxHitPoints>400</MaxHitPoints>
      <WorkToBuild>12000</WorkToBuild>
      <Beauty>22</Beauty>
      <MeditationFocusStrength>0.25</MeditationFocusStrength>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">60</StyleDominance>
    </statBases>
    <costStuffCount>425</costStuffCount>
    <uiIconScale>0.85</uiIconScale>
	<uiIconOffset>(0, -0.02)</uiIconOffset>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <texPath>Things/Building/Furniture/VBY_Torii/VBY_Torii</texPath>
      <drawSize>(9,9)</drawSize>	  
	  <drawOffsetNorth>(0,0,3)</drawOffsetNorth>
	  <drawOffsetSouth>(0,0,3)</drawOffsetSouth>
	  <drawOffsetEast>(0,0,1)</drawOffsetEast>
	  <drawOffsetWest>(0,0,1)</drawOffsetWest>
	  <shadowData>
        <volume>(1.5, 0.6, 1.5)</volume>
        <offset>(0, 0, -0.15)</offset>
      </shadowData>
      <damageData>
        <rect>(0.1,0.1,1.9,1.9)</rect>
      </damageData>
    </graphicData>
	<recipeMaker>
	   <requiredGiverWorkType>Construction</requiredGiverWorkType>
	   <skillRequirements>
	     <Construction>12</Construction>
	   </skillRequirements>	
	</recipeMaker>
    <ideoBuildingNamerBase MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoSculpture</ideoBuildingNamerBase>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Artistic</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_BuildingDefsLit">
            <defs>
              <li>VBY_ShintoShrine</li>
            </defs>
            <offsetPerBuilding>-0.15</offsetPerBuilding>
            <radius>99.9</radius>
            <maxBuildings>4</maxBuildings>
            <explanationKey>MeditationFocusPerSculpture</explanationKey>
            <explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
          </li>
        </offsets>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_MeditationOffsetBuildingsNear</li>
    </placeWorkers>
    <ritualFocus>                      <!-- Come back and test this  -->
      <spectateDistance>2</spectateDistance>
      <allowedSpectateSides>Down</allowedSpectateSides>
    </ritualFocus>
  </ThingDef>

</Defs>