<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <DesignatorDropdownGroupDef>
		<defName>VBY_AndonLantern</defName>
		<label>andon lanterns</label>
  </DesignatorDropdownGroupDef>


  <ThingDef Abstract="True" Name="VBY_AndonBase" ParentName="BuildingBase">
    <category>Building</category>
    <minifiedDef>MinifiedThing</minifiedDef>
	<thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
	<rotatable>false</rotatable>
    <altitudeLayer>MetaOverlays</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>15</pathCost>   
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
	<selectable>true</selectable>
	<stuffCategories>
      <li>Woody</li>     
    </stuffCategories>
    <costStuffCount>7</costStuffCount>
	<comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
	<building>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
	<designatorDropdown>VBY_AndonLantern</designatorDropdown>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
  </ThingDef>	

 <ThingDef ParentName="VBY_AndonBase">
    <defName>VBY_Andon</defName>
    <label>andon</label>
    <description>A wood lantern for lighting rooms with a pleasant light.</description>	
    <graphicData>
      <texPath>Things/Building/Misc/VBY_dupe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
	  <drawSize>(1,1)</drawSize>
	  <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <uiIconPath>Things/Building/Misc/VBY_dupe</uiIconPath>
    <!--
	<uiIconScale>0.85</uiIconScale>
	-->	
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
      <WorkToBuild>150</WorkToBuild>
      <Flammability>0</Flammability>
	  <Mass>1.5</Mass>
      <Beauty>4</Beauty>
    </statBases>    
    <costList>
      <Chemfuel>10</Chemfuel>
    </costList>    
    <placeWorkers>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>0.25</fuelConsumptionRate>
        <fuelCapacity>10.0</fuelCapacity>        
        <fuelFilter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>1</initialFuelPercent>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>	  
      <li Class="CompProperties_Glower">
        <glowRadius>4</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>0.25</heatPerSecond>
        <heatPushMaxTemperature>10</heatPushMaxTemperature>
      </li>	  
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offset>(0,-0.05,0.05)</offset>
      </li>
	  <li MayRequire="owlchemist.simplefx.smoke2" Class="Flecker.CompProperties_Smoker">
		<fleckDef>Owl_Vapor</fleckDef>
		<particleSize>0.4</particleSize>
		<particleOffset>(0,0,0.5)</particleOffset>
	  </li>	  
    </comps>
    <designationCategory>Furniture</designationCategory>
    <designationHotKey>Misc10</designationHotKey>
  </ThingDef>
  
   <ThingDef ParentName="VBY_AndonBase">
    <defName>VBY_AndonElec</defName>
    <label>electric andon</label>
    <description>An electric wood lantern for lighting rooms with a pleasant light.</description>    
    <graphicData>
      <texPath>Things/Building/Misc/AndonFireC</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
	  <drawSize>(1,1)</drawSize>
	  <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <uiIconPath>Things/Building/Misc/AndonFireC</uiIconPath>
    <!--
	<uiIconScale>0.85</uiIconScale>
    -->	
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
      <WorkToBuild>150</WorkToBuild>
      <Flammability>0</Flammability>
	  <Mass>1.5</Mass>
      <Beauty>2</Beauty>
    </statBases>    
    <costList>      
	  <ComponentIndustrial>1</ComponentIndustrial>
    </costList>   
    <comps>
      <li Class="CompProperties_Flickable"/>	
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>6</basePowerConsumption>
      </li>	  
    </comps>
	<researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
    <designationCategory>Furniture</designationCategory>
    <designationHotKey>Misc11</designationHotKey>
  </ThingDef>
  
</Defs>  