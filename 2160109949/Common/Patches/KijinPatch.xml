<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
        <mods>
          <li>Kijin Race 2.0</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
		          <xpath>Defs/TerrainDef[defName="DadamiTile"]</xpath>
		            <value>
			           <designatorDropdown>VBY_TatamiMats</designatorDropdown>
		            </value>
				</li>				
				<li Class="PatchOperationReplace">
					<xpath>Defs/TerrainDef[defName="DadamiTile"]/statBases</xpath>
					<value>
						<statBases>
							<Beauty>1.5</Beauty>
							<Flammability>0.12</Flammability>
							<WorkToBuild>600</WorkToBuild>
							<Cleanliness>0.12</Cleanliness>
						</statBases>
					</value>
				</li>	
				<li Class="PatchOperationRemove">
					<xpath>Defs/TerrainDef[defName="DadamiTile"]/constructionSkillPrerequisite</xpath>					
				</li>	
				<li Class="PatchOperationReplace">
					<xpath>Defs/TerrainDef[defName="DadamiTile"]/costList</xpath>
					<value>
						<costList>
							<Hay>14</Hay>
						</costList>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/TerrainDef[@Name="VBY_TatamiBase"]/burnedDef</xpath>
					<value>
						<burnedDef>BurnedDadamiTile</burnedDef>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/TerrainDef[@Name="VBY_TatamiBase"]/researchPrerequisites/li[text()="CarpetMaking"]</xpath>
					<value>
					  <li>DadamiFloor</li>
					</value>
				</li>				
			</operations>
        </match>
	</Operation>	
	
</Patch>	