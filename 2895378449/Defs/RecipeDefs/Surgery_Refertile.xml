<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef ParentName="SurgeryFlesh">
    <defName>Remove_Sterilization</defName>
    <label>remove sterilization</label>
    <description>Removes the sterilization from a creature so it can reproduce again.</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <jobString>Removing sterilization from TargetA.</jobString>
    <workAmount>500</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
    <isViolation>true</isViolation>
    <targetsBodyPart>false</targetsBodyPart>
    <removesHediff>Sterilized</removesHediff>
    <successfullyRemovedHediffMessage>{0} has successfully removed the sterilization from {1}.</successfullyRemovedHediffMessage>
    <surgeryIgnoreEnvironment>true</surgeryIgnoreEnvironment>
    <skillRequirements>
      <Medicine>3</Medicine>
    </skillRequirements>
  </RecipeDef>

</Defs>
