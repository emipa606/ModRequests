	<HediffDef ParentName="addedPartAdvanced">
		<defName>AdditionalAdvancedPowerArm</defName>
		<label>additional (advanced power) arm</label>
		<description>An installed additional (advanced power) arm.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.3</offset>
					</li>
				</capMods>
				<statOffsets>
					<MeleeHitChance>+0.33</MeleeHitChance>
					<MeleeWeapon_CooldownMultiplier>-0.25</MeleeWeapon_CooldownMultiplier>
					<GeneralLaborSpeed>+0.12</GeneralLaborSpeed>
					<CookSpeed>+0.12</CookSpeed>
					<WorkSpeedGlobal>+0.12</WorkSpeedGlobal>
					<MiningSpeed>+0.11</MiningSpeed>
					<SmoothingSpeed>+0.11</SmoothingSpeed>
					<ConstructionSpeed>+0.12</ConstructionSpeed>
					<CarryingCapacity>+19</CarryingCapacity>
					
					<PawnBeauty>-0.06</PawnBeauty>
					<SocialImpact>-0.01</SocialImpact>
				</statOffsets>
			</li>
		</stages>
		<comps>
         <li Class="HediffCompProperties_VerbGiver">
            <tools>
               <li>
                  <label>advanced power fist</label>
                  <capacities>
                     <li>Blunt</li>
                  </capacities>
                  <power>22</power>
                  <cooldownTime>1.8</cooldownTime>
               </li>
            </tools>
         </li>
      </comps>
		<spawnThingOnRemoved>AdvancedPowerArm</spawnThingOnRemoved>
	</HediffDef>

