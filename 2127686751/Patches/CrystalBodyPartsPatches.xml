<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!--Remove Hediffs-->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[1.1] Crystal Bodyparts</li>
    </mods>
    <nomatch Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="SecondCrystalLung"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="SecondCrystalStomach"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="SecondCrystalLiver"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="SecondCrystalKidney"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="SecondCrystalHeart"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="AdditionalCrystalArm"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="ThirdCrystalLeg"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="AdditionalCrystalEar"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="ThirdCrystalEye"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[defName="AdditionalCrystalSpine"]</xpath>
        </li>
        
      </operations>
    </nomatch>
  </Operation>

  

  <!--Remove Recipes-->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[1.1] Crystal Bodyparts</li>
    </mods>
    <nomatch Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallAdditionalCrystalArm"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallThirdCrystalLeg"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallThirdCrystalEye"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallAdditionalCrystalEar"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallAdditionalCrystalSpine"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallAdditionalCrystalLung"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallSecondCrystalStomach"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallSecondCrystalLiver"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallAdditionalCrystalKidney"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="InstallSecondCrystalHeart"]</xpath>
        </li>        
      </operations>
    </nomatch>
  </Operation>  

</Patch>