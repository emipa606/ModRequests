<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>PangaeaOlorotitan</defName>
    <label>olorotitan</label>
    <description>Olorotitan Arharensis. A large hadrosaurid from cretaceous Russia. They are very large for a hadrosaur but they are still just as friendly as most of their cousins. Olorotitans are also adapted to rather cold environments and as such will do well in temperate biomes.</description>
    <statBases>
      <MoveSpeed>6</MoveSpeed>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <MarketValue>1000</MarketValue>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
    </statBases>
	<comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaOlorotitanFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>left leg</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right leg</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>CrestedHadrosaur</body>
      <herdAnimal>true</herdAnimal>
      <packAnimal>false</packAnimal>
      <baseBodySize>3.5</baseBodySize>
			<baseHealthScale>3.5</baseHealthScale>
			<baseHungerRate>1.5</baseHungerRate>
			<foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Dino</leatherDef>
      <wildness>0.25</wildness>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <gestationPeriodDays>25</gestationPeriodDays>
      <lifeExpectancy>75</lifeExpectancy>
	  <meatLabel>dinosaur flesh</meatLabel>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.45</minAge>
          <soundWounded>Pawn_Elk_Wounded</soundWounded>
          <soundDeath>Pawn_Elk_Death</soundDeath>
          <soundCall>Pawn_Elk_Call</soundCall>
          <soundAngry>Pawn_Elk_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

