<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>PangaeaPachyrhinosaurus</defName>
    <label>pachyrhinosaurus</label>
    <description>Pachyrhinosaurus Titusi. A large two horned ceratopsid from the USA. While their force is still a power to reckon with, Pachyrhinosauruses are far less aggressive than their three horned cousins from Hell Creek. Fun fact, horns on their skull are positioned in a manner similar to that of a bull.</description>
    <statBases>
      <MoveSpeed>4.8</MoveSpeed>
      <ComfyTemperatureMin>-40</ComfyTemperatureMin>
      <MarketValue>1000</MarketValue>
      <ComfyTemperatureMax>55</ComfyTemperatureMax>
    </statBases>
	<comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaPachyrhinosaurusFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>left leg</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right leg</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>35</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>HornlessCeratopsid</body>
      <herdAnimal>true</herdAnimal>
      <packAnimal>false</packAnimal>
      <baseBodySize>3</baseBodySize>
			<baseHealthScale>3.8</baseHealthScale>
			<baseHungerRate>2.3</baseHungerRate>
			<foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Dino</leatherDef>
      <wildness>0.65</wildness>
      <manhunterOnTameFailChance>0.1</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.1</manhunterOnDamageChance>
      <gestationPeriodDays>25</gestationPeriodDays>
      <lifeExpectancy>75</lifeExpectancy>
	  <meatLabel>dinosaur flesh</meatLabel>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.45</minAge>
          <soundWounded>Pawn_Elk_Wounded</soundWounded>
          <soundDeath>Pawn_Elk_Death</soundDeath>
          <soundCall>Pawn_Elk_Call</soundCall>
          <soundAngry>Pawn_Elk_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

