<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>PangaeaStegosaurus</defName>
    <label>Stegosaurus</label>
    <description>Stegosaurus Stenops. A large stegosaurid from jurassic period. Stegosaurus weird powerful tails with four large spikes they do not hesitate to use. They also have two rows of plates on their backs. The use of those is yet to be determined. Usually they are rather peaceful but caution is advised.</description>
    <statBases>
      <MoveSpeed>3.75</MoveSpeed>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <MarketValue>1000</MarketValue>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
    </statBases>
	<comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaStegosaurusFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>left leg</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right leg</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
	  <li>
        <label>tail</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Tail</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>Stegosaurid</body>
      <herdAnimal>false</herdAnimal>
      <packAnimal>false</packAnimal>
      <baseBodySize>13</baseBodySize>
			<baseHealthScale>5</baseHealthScale>
			<baseHungerRate>4</baseHungerRate>
			<foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Dino</leatherDef>
      <wildness>0.25</wildness>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <gestationPeriodDays>25</gestationPeriodDays>
      <lifeExpectancy>100</lifeExpectancy>
	  <meatLabel>dinosaur flesh</meatLabel>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.45</minAge>
          <soundWounded>Pawn_Elk_Wounded</soundWounded>
          <soundDeath>Pawn_Elk_Death</soundDeath>
          <soundCall>Pawn_Elk_Call</soundCall>
          <soundAngry>Pawn_Elk_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

