<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>HolidayDiamantinasaurus</defName>
    <label>holiday diamantinasaurus</label>
    <description>Diamantinasaurus Matildae. A relatively small sauropod from Early Cretaceous. There is not much to say about them except that they are rather small and friendly. Diamantinasaurus are also relatively good as livestock . . . if you get to butcher them, that is.</description>
    <statBases>
      <MoveSpeed>4.3</MoveSpeed>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <MarketValue>2000</MarketValue>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
    </statBases>
	<comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaDiamantinasaurusFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>left leg</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>22</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right leg</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>22</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
	  <li>
        <label>tail</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>24</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Tail</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>Sauropod</body>
      <herdAnimal>true</herdAnimal>
      <packAnimal>false</packAnimal>
      <baseBodySize>3</baseBodySize>
			<baseHealthScale>3</baseHealthScale>
			<baseHungerRate>2</baseHungerRate>
			<foodType>VegetarianRoughAnimal, DendrovoreAnimal</foodType>
      <leatherDef>Leather_Dino</leatherDef>
      <wildness>0.25</wildness>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <gestationPeriodDays>25</gestationPeriodDays>
      <lifeExpectancy>100</lifeExpectancy>
	  <meatLabel>dinosaur flesh</meatLabel>
	  <wildBiomes>
        <TropicalRainforest>0.0</TropicalRainforest>
        <TemperateForest>0.0</TemperateForest>
        <BorealForest>0.0</BorealForest>
		<Tundra>0.0</Tundra>
		<ColdBog>0.0</ColdBog>
		<TemperateSwamp>0.0</TemperateSwamp>
		<TropicalSwamp>0.0</TropicalSwamp>
		<AridShrubland>0.0</AridShrubland>
      </wildBiomes>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.45</minAge>
          <soundWounded>Pawn_Elk_Wounded</soundWounded>
          <soundDeath>Pawn_Elk_Death</soundDeath>
          <soundCall>Pawn_Elk_Call</soundCall>
          <soundAngry>Pawn_Elk_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

