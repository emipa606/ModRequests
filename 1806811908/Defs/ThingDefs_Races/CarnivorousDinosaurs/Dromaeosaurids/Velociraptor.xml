<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>PangaeaVelociraptor</defName>
    <label>velociraptor</label>
    <description>Velociraptor Mongoliensis. A small dromaeosaurid from cretaceous Mongolia. Despite their size they are very deadly and can potentially attack prey larger than themselves. They also have shown signs of quite advanced intelligence so be wary.</description>
    <statBases>
      <MoveSpeed>5</MoveSpeed>
      <MarketValue>750</MarketValue>
      <ComfyTemperatureMin>-5</ComfyTemperatureMin>
      <ComfyTemperatureMax>85</ComfyTemperatureMax>
    </statBases>
    <race>
	  <body>Dromaeosaurid</body>
      <herdAnimal>true</herdAnimal>
			<baseBodySize>0.5</baseBodySize>
			<baseHealthScale>0.75</baseHealthScale>
			<baseHungerRate>0.6</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
      <wildness>0.75</wildness>
      <lifeExpectancy>75</lifeExpectancy>
      <meatLabel>dinosaur flesh</meatLabel>
	  <leatherDef>Leather_Dino</leatherDef>
      <manhunterOnTameFailChance>0.10</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.10</manhunterOnDamageChance>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaVelociraptorFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>7.5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RearRightLeg</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>
  
  <PawnKindDef ParentName="BigBirdKindBase">
    <defName>PangaeaVelociraptor</defName>
    <label>velociraptor</label>
    <labelPlural>velociraptors</labelPlural>
    <race>PangaeaVelociraptor</race>
		<combatPower>75</combatPower>
		<lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/CarnivoreDinos/Dromaeosaurids/Velociraptor/Velociraptor</texPath>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Skeletons/Dromaeosaurid/Dromaeosaurid</texPath>
          <drawSize>1.1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/CarnivoreDinos/Dromaeosaurids/Velociraptor/Velociraptor</texPath>
          <drawSize>1.5</drawSize>
          <shadowData>
            <volume>(0.3, 0.3, 0.3)</volume>
            <offset>(0,0,-0.3)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Skeletons/Dromaeosaurid/Dromaeosaurid</texPath>
          <drawSize>1.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/CarnivoreDinos/Dromaeosaurids/Velociraptor/Velociraptor</texPath>
          <drawSize>4</drawSize>
          <shadowData>
            <volume>(0.4, 0.4, 0.4)</volume>
            <offset>(0,0,-0.2)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Skeletons/Dromaeosaurid/Dromaeosaurid</texPath>
          <drawSize>1.8</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
  
</Defs>