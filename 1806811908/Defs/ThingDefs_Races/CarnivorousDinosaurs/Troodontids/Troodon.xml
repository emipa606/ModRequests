<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>PangaeaTroodon</defName>
    <label>troodon</label>
    <description>Troodon Formosus. A small troodontid from cretaceous Canada and USA. Despite their size they can be quite deadly. They also have shown signs of very advanced intelligence and as such all caretakers should be extremely cautious around them.</description>
    <statBases>
      <MoveSpeed>4.89</MoveSpeed>
      <MarketValue>8</MarketValue>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <ComfyTemperatureMax>65</ComfyTemperatureMax>
    </statBases>
    <race>
	  <body>Dromaeosaurid</body>
      <herdAnimal>true</herdAnimal>
			<baseBodySize>0.5</baseBodySize>
			<baseHealthScale>0.75</baseHealthScale>
			<baseHungerRate>0.6</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
      <wildness>0.75</wildness>
      <lifeExpectancy>75</lifeExpectancy>
      <meatLabel>dinosaur flesh</meatLabel>
	  <leatherDef>Leather_Dino</leatherDef>
      <manhunterOnTameFailChance>0.10</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.10</manhunterOnDamageChance>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaTroodonFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>7.5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RearRightLeg</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>
  
