<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>PangaeaCryolophosaurus</defName>
    <label>cryolophosaurus</label>
    <description>Cryolophosaurus Ellioti. Cryolophosaurus are not the largest nor the most powerful, but they are famous for their adaptability to cold regions of the world. Naturally found in the deposits of Earth's Antarctica. Additionally, Cryolophosaurus is one of the largest predatory dinosaurs of the Early Jurassic and classifying it to one family of theropods has proven to be quite a challenge.</description>
    <statBases>
      <MoveSpeed>5.75</MoveSpeed>
      <MarketValue>1250</MarketValue>
      <ComfyTemperatureMin>-35</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
    </statBases>
    <race>
	  <body>SingleCrestedDilophosaurid</body>
      <herdAnimal>false</herdAnimal>
			<baseBodySize>1</baseBodySize>
			<baseHealthScale>1</baseHealthScale>
			<baseHungerRate>0.8</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
      <wildness>0.8</wildness>
      <lifeExpectancy>75</lifeExpectancy>
      <meatLabel>dinosaur flesh</meatLabel>
	  <leatherDef>Leather_Dino</leatherDef>
      <manhunterOnTameFailChance>0.5</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.95</manhunterOnDamageChance>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaCryolophosaurusFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RearRightLeg</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
	  <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RearLeftLeg</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
