<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>PangaeaSpinosaurus</defName>
    <label>spinosaurus</label>
    <description>Spinosaurus Aegyptiacus. One of the largest theropods you will ever get to see. Despite their size, Spinosaurus are not the most dangerous animals out there. They will occasionally hunt humans but these are rare situations. Their bite force is rather weak and as such they mostly fight with their razor sharp claws.</description>
    <statBases>
      <MoveSpeed>3.75</MoveSpeed>
      <MarketValue>2000</MarketValue>
      <ComfyTemperatureMin>-5</ComfyTemperatureMin>
      <ComfyTemperatureMax>70</ComfyTemperatureMax>
    </statBases>
    <race>
	  <body>SailedSpinosaurid</body>
      <herdAnimal>false</herdAnimal>
			<baseBodySize>8</baseBodySize>
			<baseHealthScale>6</baseHealthScale>
			<baseHungerRate>3</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
      <wildness>0.75</wildness>
      <lifeExpectancy>75</lifeExpectancy>
      <meatLabel>dinosaur flesh</meatLabel>
	  <leatherDef>Leather_Dino</leatherDef>
      <manhunterOnTameFailChance>0.5</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.8</manhunterOnDamageChance>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaSpinosaurusFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RearRightLeg</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
	  <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RearLeftLeg</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
	  <li>
        <label>Claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>23</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLimb</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
	        <li>
        <label>Claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>23</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLimb</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>
  
