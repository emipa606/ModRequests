<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>PangaeaAllosaurus</defName>
    <label>allosaurus</label>
    <description>Allosaurus Fragilis. One of the largest terrestrial predators of the jurassic period. Unlike Tyrannosaurus they have been observed forming packs. They are weaker but also faster and as such make up in the food chain.</description>
    <statBases>
      <MoveSpeed>5.5</MoveSpeed>
      <MarketValue>2000</MarketValue>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <ComfyTemperatureMax>70</ComfyTemperatureMax>
    </statBases>
    <race>
	  <body>Tyrannosaurid</body>
      <herdAnimal>false</herdAnimal>
			<baseBodySize>2.75</baseBodySize>
			<baseHealthScale>3</baseHealthScale>
			<baseHungerRate>1.5</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
      <wildness>0.9</wildness>
      <lifeExpectancy>75</lifeExpectancy>
      <meatLabel>dinosaur flesh</meatLabel>
	  <leatherDef>Leather_Dino</leatherDef>
      <manhunterOnTameFailChance>0.10</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.95</manhunterOnDamageChance>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaAllosaurusFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>16</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RearRightLeg</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
	  <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>16</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RearLeftLeg</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>27</power>
        <cooldownTime>1.2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>
  
