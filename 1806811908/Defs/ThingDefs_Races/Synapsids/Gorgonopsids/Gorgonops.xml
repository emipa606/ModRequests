<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>PangaeaGorgonops</defName>
    <label>gorgonops</label>
    <description>Gorgonops Torvus. A rather small gorgonopsid from permian South Africa. They are quite intelligent, especially for a primitive being they are. However, they are just as deadly. They posses a set of large fangs they can easily use to rip flesh apart. Commonly thought of as large predatory beasts due to misconception of 'Gorgonopsids', Gorgonops are often overrated in combat.</description>
    <statBases>
      <MoveSpeed>4.8</MoveSpeed>
      <MarketValue>750</MarketValue>
      <ComfyTemperatureMin>-5</ComfyTemperatureMin>
      <ComfyTemperatureMax>80</ComfyTemperatureMax>
    </statBases>
    <race>
	  <body>QuadrupedAnimalWithPawsAndTail</body>
      <herdAnimal>false</herdAnimal>
			<baseBodySize>2.5</baseBodySize>
			<baseHealthScale>3.75</baseHealthScale>
			<baseHungerRate>2.34</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
      <wildness>0.5</wildness>
      <lifeExpectancy>75</lifeExpectancy>
      <meatLabel>synapsid flesh</meatLabel>
	  <leatherDef>Leather_Synapsid</leatherDef>
      <manhunterOnTameFailChance>0.10</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.10</manhunterOnDamageChance>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggPangaeaGorgonopsFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>17</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>11.5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
	  <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>11.5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>16</power>
        <cooldownTime>4</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7.6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>
  
