<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- slime unit base -->

  <PawnKindDef Name="SlimeBase" Abstract="True">
    <defaultFactionType>SlimeFaction</defaultFactionType>
    <race>Alien_Slime</race>
	<backstoryCategories>
			<li>Tribal</li>
  	</backstoryCategories>
    <chemicalAddictionChance>0.005</chemicalAddictionChance>
    <baseRecruitDifficulty>0.60</baseRecruitDifficulty>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
    <apparelTags>
      <li>Tribal</li>
      <li>Neolithic</li>
    </apparelTags>
	 <weaponTags>
      <li>NonNeolithicOnlyMelee</li>
      <li>NeolithicMeleeAdvanced</li>
      <li>NeolithicRanged</li>
      <li>NeolithicRangedBasic</li>
      <li>NeolithicRangedHeavy</li>
      <li>NeolithicRangedHunter</li>
      <li>NeolithicRangedChief</li>
    </weaponTags>
  </PawnKindDef>
  
  <!-- colonist units base -->

  <PawnKindDef Name="SlimeCivBase" ParentName="SlimeBase" Abstract="True">
    <combatPower>25</combatPower>
	<race>Alien_Slime</race>
    <itemQuality>Normal</itemQuality>
	<minGenerationAge>17</minGenerationAge>
    <maxGenerationAge>100</maxGenerationAge>
    <isFighter>false</isFighter>
    <gearHealthRange>
      <min>0.2</min>
      <max>2.0</max>
    </gearHealthRange>
    <apparelMoney>
      <min>300</min>
      <max>900</max>
    </apparelMoney>
    <weaponMoney>
      <min>1400</min>
      <max>2500</max>
    </weaponMoney>
    <weaponTags>
	  <li>NeolithicMeleeAdvanced</li>
	  <li>NeolithicRangedHeavy</li>
    </weaponTags>
    <techHediffsMoney>
      <min>200</min>
      <max>300</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Simple</li>
    </techHediffsTags>
    <techHediffsChance>0.01</techHediffsChance>
    <invNutrition>2.55</invNutrition>
    <inventoryOptions>
      <skipChance>0.45</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>90</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>25</min>
            <max>70</max>
          </countRange>
        </li>
        <li>
          <choiceChance>10</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>700</min>
            <max>1000</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>
  
  <!-- colonist units -->
  
  <PawnKindDef ParentName="SlimeCivBase">
    <defName>SlimeColonist</defName>
    <label>colonist</label>
  </PawnKindDef>

  <PawnKindDef ParentName="SlimeCivBase">
    <defName>SlimeElder</defName>
    <label>Elder</label>
    <labelPlural>Elders</labelPlural>
    <factionLeader>true</factionLeader>
  </PawnKindDef>
  
  <PawnKindDef ParentName="SlimeCivBase">
    <defName>SlimeTrader</defName>
    <label>colony trader</label>
    <trader>true</trader>
  </PawnKindDef>

    <PawnKindDef ParentName="SlimeCivBase">
    <defName>SlimeSlave</defName>
    <label>slave</label>
  </PawnKindDef>

    <PawnKindDef ParentName="SlimeCivBase">
    <defName>SlimeRefugee</defName>
    <label>refugee</label>
  </PawnKindDef>
  

  
  <!-- guard units -->
  
  <PawnKindDef ParentName="SlimeCivBase">
    <defName>SlimeGuard</defName>
    <label>guard</label>
    <combatPower>50</combatPower>
    <maxGenerationAge>40</maxGenerationAge>
    <gearHealthRange>
      <min>0.5</min>
      <max>1.8</max>
    </gearHealthRange>
    <apparelMoney>
      <min>700</min>
      <max>4000</max>
    </apparelMoney>
    <weaponMoney>
      <min>1400</min>
      <max>3000</max>
    </weaponMoney>
    <weaponTags>
	  <li>NeolithicRanged</li>
    </weaponTags>
    <techHediffsMoney>
      <min>200</min>
      <max>5000</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Simple</li>
    </techHediffsTags>
    <techHediffsChance>0.03</techHediffsChance>
    <invNutrition>2.55</invNutrition>
    <inventoryOptions>
      <skipChance>0.95</skipChance>
      <thingDef>Silver</thingDef>
      <countRange>
        <min>30</min>
        <max>100</max>
      </countRange>
    </inventoryOptions>
  </PawnKindDef>
  
 
  <!-- military units base -->
  
  <PawnKindDef Name="SlimeMilBase" ParentName="SlimeBase" Abstract="True">
    <chemicalAddictionChance>0</chemicalAddictionChance>
    <isFighter>true</isFighter>
	<race>Alien_Slime</race>
    <invNutrition>2.55</invNutrition>
    <itemQuality>Normal</itemQuality>
	<minGenerationAge>19</minGenerationAge>
    <maxGenerationAge>50</maxGenerationAge>
    <gearHealthRange>
      <min>0.7</min>
      <max>2.3</max>
    </gearHealthRange>
    <apparelTags>
      <li>Tribal</li>
    </apparelTags>
    <apparelMoney>
      <min>1500</min>
      <max>5800</max>
    </apparelMoney>
    <weaponMoney>
      <min>1400</min>
      <max>20000</max>
    </weaponMoney>
    <weaponTags>
	 <li>NeolithicRanged</li>
	 <li>NeolithicMeleeAdvanced</li>
    </weaponTags>
    <techHediffsMoney>
      <min>1000</min>
      <max>1500</max>
    </techHediffsMoney>
    <inventoryOptions>
      <skipChance>0.8</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>50</min>
            <max>200</max>
          </countRange>
        </li>
        <li>
          <thingDef>MedicineIndustrial</thingDef>
          <countRange>
            <min>1</min>
            <max>1</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>
  
  <!-- military units -->

  <PawnKindDef ParentName="SlimeMilBase">
    <defName>SlimeWarrior</defName>
    <label>Warrior</label>
    <combatPower>70</combatPower>
  </PawnKindDef>
  
</Defs>
