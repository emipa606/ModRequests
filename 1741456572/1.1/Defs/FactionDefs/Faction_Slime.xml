<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
		<defName>SlimeFaction</defName>
		<label>Slime Tribe</label>
    <description>A tribe of Slime People. Peaceful unless provoked.</description>
    <pawnsPlural>Slimes</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Elder</leaderTitle>
		<factionNameMaker>NamerFactionSlime</factionNameMaker>
		<settlementNameMaker>NamerSettlementSlime</settlementNameMaker>
    <colorSpectrum>
      <li>(0.35, 0.30, 0.60)</li>
      <li>(0.45, 0.40, 0.90)</li>
    </colorSpectrum>
    <startingGoodwill>
      <min>10</min>
      <max>40</max>
    </startingGoodwill>
	<techLevel>Neolithic</techLevel>
  <backstoryCategories>
			<li>Tribal</li>
  	</backstoryCategories>
			<hairTags>
			<li>SlimeHair</li>
			</hairTags>
    <naturalColonyGoodwill>
      <min>10</min>
      <max>40</max>
    </naturalColonyGoodwill>
    <visitorTraderKinds>
      <li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
   <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_Slaver</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-10</min>
      <max>60</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <SlimeColonist>50</SlimeColonist>
          <SlimeGuard>90</SlimeGuard>
          <SlimeElder>250</SlimeElder>
          <SlimeWarrior>100</SlimeWarrior>
        </options>
      </li>
	  <li>
      <kindDef>Trader</kindDef>
        <traders>
          <SlimeTrader>1</SlimeTrader>
        </traders>
        <carriers>
          <Muffalo>4</Muffalo>
        </carriers>
        <guards>
          <SlimeGuard>90</SlimeGuard>
        </guards>
      </li>
        <li>
       <kindDef>Peaceful</kindDef>
        <options>
          <SlimeColonist>50</SlimeColonist>
          <SlimeGuard>90</SlimeGuard>
          <SlimeElder>250</SlimeElder>
          <SlimeWarrior>100</SlimeWarrior>
        </options>
      </li>
	  <li>
        <kindDef>Settlement</kindDef>
        <options>
          <SlimeColonist>50</SlimeColonist>
          <SlimeGuard>90</SlimeGuard>
          <SlimeElder>250</SlimeElder>
          <SlimeWarrior>100</SlimeWarrior>
        </options>
      </li>
    </pawnGroupMakers>
	<settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
	<factionIconPath>World/SlimeBase</factionIconPath>
	
  </FactionDef>

</Defs>