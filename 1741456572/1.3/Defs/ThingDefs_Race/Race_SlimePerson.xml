				<aliencrowntypes>
				<li>Average_SlimeHead</li>
          </aliencrowntypes>
          <alienbodytypes>
            <li>Hulk</li>
            <li>Thin</li>
            <li>Male</li>
            <li>Female</li>
          </alienbodytypes>
          <colorChannels>
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
