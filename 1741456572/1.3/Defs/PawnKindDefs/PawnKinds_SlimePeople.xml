<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <PawnKindDef Name="SlimePersonBase" Abstract="True">
    <defaultFactionType>SlimePeopleFaction</defaultFactionType>
    <race>Alien_SlimePersonRace</race>
    <chemicalAddictionChance>0.005</chemicalAddictionChance>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>15~24</initialResistanceRange>
	<minGenerationAge>17</minGenerationAge>
    <maxGenerationAge>100</maxGenerationAge>
	<backstoryCategories>
			<li>Tribal</li>
  	</backstoryCategories>
    <apparelAllowHeadgearChance>.50</apparelAllowHeadgearChance>
    <apparelTags>
      <li>Tribal</li>
      <li>Neolithic</li>
    </apparelTags>
  </PawnKindDef>



  <PawnKindDef Name="SlimePersonCivBase" ParentName="SlimePersonBase" Abstract="True">
    <combatPower>25</combatPower>
    <race>Alien_SlimePersonRace</race>
    <itemQuality>Normal</itemQuality>
    <isFighter>false</isFighter>
    <backstoryFilters>
      <li>
        <categories>
          <li>Tribal</li>
        </categories>
      </li>
    </backstoryFilters>
    <gearHealthRange>
      <min>0.2</min>
      <max>2.0</max>
    </gearHealthRange>
    <apparelMoney>
      <min>300</min>
      <max>900</max>
    </apparelMoney>
    <weaponMoney>
      <min>140</min>
      <max>250</max>
    </weaponMoney>
    <weaponTags>
      <li>Gun</li>
      <li>Melee</li>
    </weaponTags>
    <techHediffsMoney>
      <min>200</min>
      <max>300</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Simple</li>
    </techHediffsTags>
    <techHediffsChance>0.01</techHediffsChance>
    <invNutrition>2.55</invNutrition>
    <inventoryOptions>
      <skipChance>0.45</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>90</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>25</min>
            <max>70</max>
          </countRange>
        </li>
        <li>
          <choiceChance>10</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>700</min>
            <max>1000</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>



  <PawnKindDef ParentName="SlimePersonCivBase">
    <defName>SlimePersonColonist</defName>
    <label>colonist</label>
	<backstoryCategories>
			<li>Tribal</li>
  	</backstoryCategories>
  </PawnKindDef>
  <PawnKindDef ParentName="SlimePersonCivBase">
    <defName>SlimePersonElder</defName>
    <label>elder</label>
	<backstoryCategories>
			<li>Tribal</li>
  	</backstoryCategories>
    <labelPlural>elders</labelPlural>
    <factionLeader>true</factionLeader>
  </PawnKindDef>
  <PawnKindDef ParentName="SlimePersonCivBase">
    <defName>SlimePersonTrader</defName>
