  <!--==================================== 리볼버 ====================================-->
  <ThingDef ParentName="PN_BaseMakeableGun">
    <defName>PN_Revolver</defName>
    <label>PnL revolver</label>
    <description>A revolver similar to a shotgun that fires from six barrels at once.</description>
