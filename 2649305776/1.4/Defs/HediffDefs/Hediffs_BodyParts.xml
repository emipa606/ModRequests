<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--==================================== 베이스 ====================================-->
  <HediffDef Name="PN_ImplantHediffBase" Abstract="True">
    <hediffClass>Hediff_Implant</hediffClass>
