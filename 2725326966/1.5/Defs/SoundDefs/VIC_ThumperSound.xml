<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <SoundDef>
    <defName>VIC_ThumperStart</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Electricity/GeothermalPlant/Start/GeothermalPlantStart_1a</clipPath>
          </li>
        </grains>
        <volumeRange>16~16</volumeRange>
        <distRange>0~50.27907</distRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>VIC_ThumperStop</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Electricity/GeothermalPlant/Stop/GeothermalPlantStop_1a</clipPath>
          </li>
        </grains>
        <volumeRange>16~16</volumeRange>
        <distRange>0~50.27907</distRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>VIC_ThumperAmbience</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
    <sustainStartSound>VIC_ThumperStart</sustainStartSound>
    <sustainStopSound>VIC_ThumperStop</sustainStopSound>
    <subSounds>
      <li>
        <muteWhenPaused>True</muteWhenPaused>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>VIC_Thumper/Thumper_amb</clipPath>
          </li>
        </grains>
        <volumeRange>15~15</volumeRange>
        <pitchRange>1~1.015</pitchRange>
        <distRange>0~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>VIC_Thumper_hit</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>VIC_Thumper/Thumper_hit</clipPath>
          </li>
        </grains>
        <volumeRange>13~15</volumeRange>
        <pitchRange>.85~1</pitchRange>
        <distRange>25~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>VIC_Thumper_hit_deep</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>VIC_Thumper/Thumper_hit_deep</clipPath>
          </li>
        </grains>
        <volumeRange>15~18</volumeRange>
        <pitchRange>.85~1</pitchRange>
        <distRange>30~35</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>VIC_Thumper_boom</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>VIC_Thumper/Thumper_boom</clipPath>
          </li>
        </grains>
        <volumeRange>13~15</volumeRange>
        <pitchRange>.85~1</pitchRange>
        <distRange>25~30</distRange>
      </li>
    </subSounds>
  </SoundDef>
</Defs>



