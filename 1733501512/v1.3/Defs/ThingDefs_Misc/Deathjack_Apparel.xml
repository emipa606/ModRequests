 <ThingDef ParentName="ApparelMakeableBaseDeathjacks">
    <defName>Apparel_DeathjackShirt</defName>
    <label>Deathjack uniform</label>
    <description>A uniform worn by the Deathjacks.</description>
   <techLevel>Medieval</techLevel>
   <costList>
     <Cloth>50</Cloth>
   </costList>
    <graphicData>
      <texPath>Things/Item/Apparel/DeathjackShirt/DeathjackShirt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>3200</WorkToMake>
      <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.06</ArmorRating_Blunt>
      <ArmorRating_Heat>0.10</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <Mass>0.3</Mass>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/DeathjackShirt/DeathjackShirt</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Deathjack</li>
        <li>DeathjackLow</li>
        <li>DeathjackMiddle</li>
        <li>DeathjackHigh</li>
        <li>DeathjackSpecial</li>
      </tags>
      <defaultOutfitTags>
        <li>Deathjack</li>
      </defaultOutfitTags>
    </apparel>
   <recipeMaker>
     <skillRequirements>
       <Crafting>4</Crafting>
     </skillRequirements>
   </recipeMaker>
   <colorGenerator Class="ColorGenerator_Options">
     <options>
       <li>
         <weight>10</weight>
         <only>(1.0,1.0,1.0,1)</only>
       </li>
     </options>
   </colorGenerator>
  </ThingDef>

