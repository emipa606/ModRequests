<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ResearchProjectDef>
    <defName>MiningBasicsResearch</defName>
    <label>basic crypto mining</label>
    <description>learn the basics of cryptocurrency mining, unlocks a basic miner</description>
    <baseCost>1000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <researchViewX>11.00</researchViewX>
    <researchViewY>6</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>BigMiningBasicsResearch</defName>
    <label>big basic crypto mining</label>
    <description>learn how to build a bigger version of the crypto miner</description>
    <baseCost>2000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MiningBasicsResearch</li>
    </prerequisites>
    <researchViewX>12.00</researchViewX>
    <researchViewY>6</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>MiningServersResearch</defName>
    <label>mining server</label>
    <description>Extend your knowledge of mining to be able to produce bigger mining servers</description>
    <baseCost>3000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>BigMiningBasicsResearch</li>
    </prerequisites>
    <hiddenPrerequisites>
      <li>Machining</li>
    </hiddenPrerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <researchViewX>13.00</researchViewX>
    <researchViewY>6</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>BigMiningServersResearch</defName>
    <label>big mining server</label>
    <description>Extend your knowledge of mining to be able to produce even faster mining servers</description>
    <baseCost>4000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>MiningServersResearch</li>
    </prerequisites>
    <hiddenPrerequisites>
      <li>Fabrication</li>
    </hiddenPrerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <researchViewX>14.00</researchViewX>
    <researchViewY>6</researchViewY>
  </ResearchProjectDef>
</Defs>
