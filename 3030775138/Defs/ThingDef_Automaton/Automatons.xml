<?xml version="1.0" encoding="utf-8" ?>
<Defs> 

  <!-- Automaton -->
  
  <ThingDef ParentName="BaseMechanoidWalker">
    <defName>Automaton_AutomatonSoldier</defName>
    <label>automaton soldier</label>
    <description>An experimental humanoid construct made of steel, and a creation of the proud dwarven mechanics. These constructs are built specifically for battle, able to wield one of the best weapons that their mechanical hands can carry, but due to their experimental status, they only have a limited lifespan and explodes upon death.</description>
    <statBases>
      <MoveSpeed>4.5</MoveSpeed>
	  <EMPResistance>0.25</EMPResistance>
	  <ArmorRating_Blunt>0.75</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
	  <ArmorRating_Heat>0.85</ArmorRating_Heat>
      <PsychicSensitivity>0</PsychicSensitivity>
	  <StaggerDurationFactor>0</StaggerDurationFactor>
    </statBases>
    <tools>
	  <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.5</power>
        <cooldownTime>0.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
	<comps>
	  <!--<li Class="CompProperties_ProjectileInterceptor">
        <radius>1</radius>
        <interceptGroundProjectiles>true</interceptGroundProjectiles>
        <color>(0.0, 0.8, 0.0)</color>
        <reactivateEffect>BulletShieldGenerator_Reactivate</reactivateEffect>
        <activeSound>BulletShield_Ambience</activeSound>
        <hitPoints>10000</hitPoints>
        <hitPointsRestoreInstantlyAfterCharge>true</hitPointsRestoreInstantlyAfterCharge>
        <chargeDurationTicks>900</chargeDurationTicks>
        <rechargeHitPointsIntervalTicks>1</rechargeHitPointsIntervalTicks>
        <minIdleAlpha>0.2</minIdleAlpha>
        <drawWithNoSelection>True</drawWithNoSelection>
        <disarmedByEmpForTicks>1500</disarmedByEmpForTicks>
        <gizmoTipKey>ProjectileInterceptorTip</gizmoTipKey>
      </li>-->
	  <li Class="CompProperties_CanBeDormant" />
      <li Class="CompProperties_WakeUpDormant">
        <wakeUpOnDamage>true</wakeUpOnDamage>
        <wakeUpCheckRadius>30</wakeUpCheckRadius>
        <wakeUpSound>MechanoidsWakeUp</wakeUpSound>
      </li>
      <li Class="CompProperties_MechPowerCell">
        <totalPowerTicks>5000</totalPowerTicks>
      </li>
	  <li Class="CompProperties_Explosive">
        <wickTicks>0</wickTicks>
        <explosiveRadius>2.9</explosiveRadius>
        <explodeOnKilled>true</explodeOnKilled>
        <explosiveDamageType>Bomb</explosiveDamageType>
		<!--<propagationSpeed>0.5</propagationSpeed>-->
        <chanceNeverExplodeFromDamage>1</chanceNeverExplodeFromDamage>
      </li>
    </comps>
    <race>
      <body>Automaton_Body</body>
      <baseHealthScale>5</baseHealthScale>
      <soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
	  <mechEnabledWorkTypes>
      </mechEnabledWorkTypes>
      <lifeStageAges Inherit="False">
	    <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Scorcher_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Scorcher_Death</soundDeath>
          <soundCall>Pawn_Mech_Scorcher_Call</soundCall>
        </li>
      </lifeStageAges>
	  <thinkTreeConstant>WarUrchinConstant</thinkTreeConstant>
    </race>
	<killedLeavingsPlayerHostile>
    </killedLeavingsPlayerHostile>
  </ThingDef>

  <PawnKindDef ParentName="BaseMechanoidKind">
    <defName>Automaton_AutomatonSoldier</defName>
    <label>automaton soldier</label>
    <labelPlural>automaton soldiers</labelPlural>
    <race>Automaton_AutomatonSoldier</race>
    <combatPower>500</combatPower>
	<forceNoDeathNotification>true</forceNoDeathNotification>
	<allowInMechClusters>false</allowInMechClusters>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Mech/AutomatonSoldier/AutomatonSoldier</texPath>
          <maskPath>Things/Mech/AutomatonSoldierMask/AutomatonSoldier</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.9</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>9999~9999</weaponMoney>
    <weaponTags>
	  <li>AutomatonRangedWeapons</li>
	  <li>AutomatonMeleeWeapons</li>
    </weaponTags>
	<abilities>
    </abilities>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>9999~9999</techHediffsMoney>
  </PawnKindDef>

  <!-- Body: Automatons -->
  
  <BodyDef>
    <defName>Automaton_Body</defName>
    <label>automaton</label>
    <corePart>
      <def>MechanicalThorax</def>
      <height>Middle</height>
      <depth>Outside</depth>
      <parts>
        <li>
          <def>MechanicalNeck</def>
          <coverage>0.10</coverage>
          <height>Top</height>
          <parts>
            <li>
              <def>MechanicalHead</def>
              <coverage>0.80</coverage>
              <groups>
                <li>HeadAttackTool</li>
              </groups>
              <parts>
                <li>
                  <def>ArtificialBrain</def>
                  <coverage>0.10</coverage>
                  <depth>Inside</depth>
                </li>
                <li>
                  <def>SightSensor</def>
                  <customLabel>left sight sensor</customLabel>
                  <coverage>0.13</coverage>
                </li>
                <li>
                  <def>SightSensor</def>
                  <customLabel>right sight sensor</customLabel>
                  <coverage>0.13</coverage>
                </li>
                <li>
                  <def>HearingSensor</def>
                  <customLabel>left hearing sensor</customLabel>
                  <coverage>0.10</coverage>
                </li>
                <li>
                  <def>HearingSensor</def>
                  <customLabel>right hearing sensor</customLabel>
                  <coverage>0.10</coverage>
                </li>
                <li>
                  <def>SmellSensor</def>
                  <coverage>0.10</coverage>
                </li>
              </parts>
            </li>
          </parts>
        </li>
        <li>
          <def>MechanicalShoulder</def>
          <customLabel>left shoulder</customLabel>
          <coverage>0.17</coverage>
          <parts>
            <li>
              <def>MechanicalArm</def>
              <customLabel>left arm</customLabel>
              <coverage>0.85</coverage>
              <parts>
                <li>
                  <def>MechanicalHand</def>
                  <customLabel>left hand</customLabel>
                  <coverage>0.2</coverage>
                  <height>Bottom</height>
                  <parts>
                    <li>
                      <def>MechanicalFinger</def>
                      <customLabel>left pinky</customLabel>
                      <coverage>0.15</coverage>
                      <groups>
                        <li>LeftHand</li>
                      </groups>
                    </li>
                    <li>
                      <def>MechanicalFinger</def>
                      <customLabel>left middle finger</customLabel>
                      <coverage>0.15</coverage>
                      <groups>
                        <li>LeftHand</li>
                        <li>MiddleFingers</li>
                      </groups>
                    </li>
                    <li>
                      <def>MechanicalFinger</def>
                      <customLabel>left index finger</customLabel>
                      <coverage>0.15</coverage>
                      <groups>
                        <li>LeftHand</li>
                      </groups>
                    </li>
                    <li>
                      <def>MechanicalFinger</def>
                      <customLabel>left thumb</customLabel>
                      <coverage>0.15</coverage>
                      <groups>
                        <li>LeftHand</li>
                      </groups>
                    </li>
                  </parts>
                </li>
              </parts>
            </li>
          </parts>
        </li>
        <li>
          <def>MechanicalShoulder</def>
          <customLabel>right mechanical shoulder</customLabel>
          <coverage>0.17</coverage>
          <parts>
            <li>
              <def>MechanicalArm</def>
              <customLabel>right arm</customLabel>
              <coverage>0.85</coverage>
              <parts>
                <li>
                  <def>MechanicalHand</def>
                  <customLabel>right hand</customLabel>
                  <coverage>0.2</coverage>
                  <height>Bottom</height>
                  <parts>
                    <li>
                      <def>MechanicalFinger</def>
                      <customLabel>right pinky</customLabel>
                      <coverage>0.15</coverage>
                      <groups>
                        <li>RightHand</li>
                      </groups>
                    </li>
                    <li>
                      <def>MechanicalFinger</def>
                      <customLabel>right middle finger</customLabel>
                      <coverage>0.15</coverage>
                      <groups>
                        <li>RightHand</li>
                        <li>MiddleFingers</li>
                      </groups>
                    </li>
                    <li>
                      <def>MechanicalFinger</def>
                      <customLabel>right index finger</customLabel>
                      <coverage>0.15</coverage>
                      <groups>
                        <li>RightHand</li>
                      </groups>
                    </li>
                    <li>
                      <def>MechanicalFinger</def>
                      <customLabel>right thumb</customLabel>
                      <coverage>0.15</coverage>
                      <groups>
                        <li>RightHand</li>
                      </groups>
                    </li>
                  </parts>
                </li>
              </parts>
            </li>
          </parts>
        </li>
        <li>
          <def>MechanicalLeg</def>
          <customLabel>left leg</customLabel>
          <coverage>0.2</coverage>
          <height>Bottom</height>
          <parts>
            <li>
              <def>MechanicalFoot</def>
              <customLabel>left foot</customLabel>
              <coverage>0.2</coverage>
            </li>
          </parts>
        </li>
        <li>
          <def>MechanicalLeg</def>
          <customLabel>right leg</customLabel>
          <coverage>0.2</coverage>
          <height>Bottom</height>
          <parts>
            <li>
              <def>MechanicalFoot</def>
              <customLabel>right foot</customLabel>
              <coverage>0.2</coverage>
            </li>
          </parts>
        </li>
        <li>
          <def>Reactor</def>
          <coverage>0.06</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>FluidReprocessor</def>
          <coverage>0.04</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>FluidReprocessor</def>
          <coverage>0.04</coverage>
          <depth>Inside</depth>
        </li>
      </parts>
    </corePart>
  </BodyDef>  

</Defs> 