<?xml version="1.0" encoding="utf-8" ?>
<Defs> 

  <!-- Automaton HandCannon -->
  
  <ThingDef ParentName="BaseGun">
    <defName>Gun_AutomatonHandCannon</defName>
    <label>automaton handcannon</label>
    <description>A six-barreled handcannon wielded by the automaton soldiers.</description>
    <graphicData>
      <texPath>Things/Weapons/Weapons_Automatons/AutomatonHandCannon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.25, 1.25</drawSize>
    </graphicData>
	<!--<equippedAngleOffset>45</equippedAngleOffset>-->
	<techLevel>Industrial</techLevel>
	<destroyOnDrop>true</destroyOnDrop>
	<tradeability>None</tradeability>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
	  <MaxHitPoints>100</MaxHitPoints>
	  <MarketValue>950</MarketValue>
      <WorkToMake>45000</WorkToMake>
      <Mass>2.0</Mass>
      <AccuracyTouch>1.0</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_AutomatonHandCannon</defaultProjectile>
        <warmupTime>4</warmupTime>
		<burstShotCount>6</burstShotCount>
		<ticksBetweenBurstShots>45</ticksBetweenBurstShots>
        <range>25</range>
        <soundCast>Shot_FlintlockStrong</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>AutomatonRangedWeapons</li>
    </weaponTags>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_AutomatonHandCannon</defName>
    <label>handcannon bullet</label>
    <graphicData>
      <texPath>Things/Misc/Projectiles/Projectile_Gold</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>MoteGlow</shaderType>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>20</damageAmountBase>
	  <armorPenetrationBase>0.85</armorPenetrationBase>
      <stoppingPower>0.5</stoppingPower>
      <speed>100</speed>
	  <extraDamages>
		<!--<li>
			<def>CriticalHit</def>
			<amount>9999</amount>
			<chance>0.05</chance>
		</li>-->
		<li>
			<def>TrueShot</def>
			<chance>0.20</chance>
		</li>
	  </extraDamages>
    </projectile>	
  </ThingDef>
  
  <!-- Automaton Hand Blade -->
  
  <ThingDef ParentName="BaseWeapon">
    <defName>Melee_AutomatonHandBlade</defName>
    <label>automaton hand blade</label>
    <description>An sharp hand blade wielded by an automaton soldier.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/Weapons/Weapons_Automatons/AutomatonBlade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.4, 1.4</drawSize>
    </graphicData>
	<destroyOnDrop>true</destroyOnDrop>
	<tradeability>None</tradeability>
    <statBases>
      <MarketValue>1000</MarketValue>
      <Mass>4.5</Mass>
    </statBases>
	<equippedStatOffsets>	
	  <MeleeDodgeChance>0.3</MeleeDodgeChance>
	  <MeleeWeapon_CooldownMultiplier>-0.2</MeleeWeapon_CooldownMultiplier>
    </equippedStatOffsets>
    <weaponTags>
      <li>AutomatonMeleeWeapons</li>
    </weaponTags>
    <tools>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>25</power>
        <cooldownTime>1.5</cooldownTime>
		<armorPenetration>1.2</armorPenetration>
      </li>
	  <li>
        <label>blade tip</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>30</power>
        <cooldownTime>1.5</cooldownTime>
		<armorPenetration>1.5</armorPenetration>
      </li>
    </tools>
  </ThingDef>

</Defs>