<Defs>  
  <!--================================ キャットタワー本体 ======================================-->
  <ThingDef ParentName="ArtableFurnitureRegardlessOfQualityBase" Name="ExC_CatTowerBase" Abstract="True">
    <altitudeLayer>Building</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <size>(3, 3)</size>
    <tradeability>Sellable</tradeability>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Mass>30</Mass>
      <WorkToBuild>8000</WorkToBuild>
      <Beauty>400</Beauty>
    </statBases>
    <minifiedDef>MinifiedThing</minifiedDef>
    <costList>
      <WoodLog>200</WoodLog>
      <Gold>10</Gold>
      <ExC_CatCrystal>2</ExC_CatCrystal>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <leaveResourcesWhenKilled>False</leaveResourcesWhenKilled>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <techLevel>Medieval</techLevel>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <uiIconScale>0.80</uiIconScale>
	<building>
		<watchBuildingStandDistanceRange>
			<min>1</min>
			<max>3</max>
		</watchBuildingStandDistanceRange> 
		<watchBuildingStandRectWidth>5</watchBuildingStandRectWidth>
	</building>
	<comps>
	  <li Class="CompProperties_Usable">
		<useJob>UseArtifact</useJob>
		<useLabel>Decorate figurine</useLabel>
	  </li>
	  <li Class="CompProperties_UseEffect">
		<compClass>ExtendTheCat.ExC_CompUseEffect_DisplayFigurine</compClass>
	  </li>
	  <li Class="CompProperties_Forbiddable"/>
	</comps>
    <tickerType>Normal</tickerType>
	<drawPlaceWorkersWhileSelected>false</drawPlaceWorkersWhileSelected>
	<placeWorkers>
	  <li>PlaceWorker_WatchArea</li>
	</placeWorkers>
  </ThingDef>

