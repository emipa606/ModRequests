<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== ExC-PlantBase ==============================-->
	<ThingDef Name="ExC_PlantBase" Abstract="True">
		<defName>ExC_PlantBase</defName>
		<label>ExC_PlantBase</label>
		<description>ExCシリーズ農産物のベースです。</description>
		<category>Plant</category>
		<thingClass>Plant</thingClass>
		<altitudeLayer>LowPlant</altitudeLayer>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
			<Flammability>1</Flammability>
			<Beauty>1</Beauty>
		</statBases>
		<tickerType>Long</tickerType>
		<selectable>true</selectable>
		<neverMultiSelect>True</neverMultiSelect>
		<drawerType>MapMeshOnly</drawerType>
		<pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
		<pathCost>10</pathCost>
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
			<shaderType>CutoutPlant</shaderType>
		</graphicData>
		<ingestible>
			<foodType>Plant</foodType>
			<preferability>RawBad</preferability>
		</ingestible>
		<plant>
			<fertilityMin>0.7</fertilityMin>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<soundHarvesting>Harvest_Standard</soundHarvesting>
			<soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
			<sowWork>170</sowWork>
			<harvestWork>250</harvestWork>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.00</max>
			</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>

  <!--=========================== またたび ==============================-->
	<ThingDef ParentName="ExC_PlantBase">
		<defName>ExC_Farm_Silvervine</defName>
		<label>Silvervine</label>
		<description>It bears an oval fruit.This fruit is a favorite of cats.</description>
		<graphicData>
			<texPath>Things/Plant/ExC_Silvervine</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<maxMeshCount>1</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>ExC_Silvervine</harvestedThingDef>
			<harvestYield>10</harvestYield>
			<growDays>6</growDays>
      		<immatureGraphicPath>Things/Immature/ExC_Silvervine</immatureGraphicPath>
			<visualSizeRange>
				<min>0.5</min>
				<max>0.9</max>
			</visualSizeRange>
			<sowMinSkill>3</sowMinSkill>
		</plant>
	</ThingDef>

</Defs>
