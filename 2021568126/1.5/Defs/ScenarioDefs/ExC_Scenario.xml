<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ScenarioDef Name="ExC_Scenario_SearchOfCats">
    <defName>ExC_Scenario_SearchOfCats</defName>
    <label>In search of cats</label>
    <description>Welcome to the cats world ! \n In this world, creatures called cats live everywhere. \n\n You can interact with the cats in this world or assemble a rocket as usual.\n Now, let's go to the cats world with our partner, Cat!</description>
    <scenario>
      <summary>You have three settlers, a cat, and some materials. Let's go on an adventure!</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>PlayerColony</factionDef>
      </playerFaction>
      <parts>
        <!-- 開始時のダイアログ -->
        <li Class="ExtendTheCat.ExC_ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>\n\n\n\n Welcome to the cats world ! \n You've landed here, where the creature called the cat lives. \n\n You set out on a new adventure with your partner. \n Let's start survival in a paradise where the cats roam!</text>
          <closeSound>GameStartSting</closeSound>
        </li>
        <!-- 入植者初期設定画面　-->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>3</pawnCount>
          <pawnChoiceCount>8</pawnChoiceCount>
        </li>
        <!-- 登場方式　-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>DropPods</method>
          <visible>false</visible>
        </li>
        <!-- アイテム　-->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>800</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>50</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineIndustrial</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentIndustrial</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gun_BoltActionRifle</thingDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gun_Revolver</thingDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MeleeWeapon_Knife</thingDef>
          <stuff>Plasteel</stuff>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Apparel_FlakPants</thingDef>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Apparel_FlakVest</thingDef>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
        	<def>StartingThing_Defined</def>
        	<thingDef>Apparel_AdvancedHelmet</thingDef>
			<stuff>Plasteel</stuff>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ExC_CatFood</thingDef>
          <count>150</count>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ExC_Churu</thingDef>
          <count>10</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>450</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>300</count>
        </li>
        <!-- ペット -->
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <animalKind>ExC_NEKO_Cat</animalKind>
          <count>1</count>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>
</Defs>