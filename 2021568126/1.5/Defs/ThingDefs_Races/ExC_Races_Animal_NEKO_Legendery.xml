	<defName>ExC_NEKO_KillerCat</defName>
	<label>Killer Cat</label>
	<description>It is a legendary cat. It is said to follow only strong people who overthrow themselves.</description>
    <comps>
      <li Class="CompProperties_Shearable">
        <woolDef>ExC_Killer_Wool</woolDef>
        <shearIntervalDays>20</shearIntervalDays>
        <woolAmount>45</woolAmount>
      </li>
    </comps>
  </ThingDef>



