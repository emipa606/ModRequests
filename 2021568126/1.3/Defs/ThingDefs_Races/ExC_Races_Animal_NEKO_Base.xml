<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase" Abstract="True" Name="ExC_CatBase">
    <label>CatBase</label>
    <description>ねこです。よろしくおねがいします。</description>
    <statBases>
		<ComfyTemperatureMin>-35</ComfyTemperatureMin>
		<ComfyTemperatureMax>60</ComfyTemperatureMax>
		<MeatAmount>60</MeatAmount>
		<LeatherAmount>10</LeatherAmount>
		<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
		<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
		<ArmorRating_Heat>0.3</ArmorRating_Heat>
		<ToxicSensitivity>0.6</ToxicSensitivity>
		<PsychicSensitivity>0.6</PsychicSensitivity>
		<Flammability>0.50</Flammability>
		<MoveSpeed>5.5</MoveSpeed>
		<MarketValue>400</MarketValue>
		<Mass>10</Mass>
    </statBases>
    <tools>
    </tools>
    <race>
      <packAnimal>true</packAnimal>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <petness>0.95</petness>
      <baseBodySize>2.0</baseBodySize>
      <baseHungerRate>0.45</baseHungerRate>
      <leatherDef>ExC_NEKO_Leather</leatherDef>
      <baseHealthScale>4.0</baseHealthScale>
      <foodType>CarnivoreAnimal, OvivoreAnimal</foodType>
      <gestationPeriodDays>30</gestationPeriodDays>
      <trainability>Advanced</trainability>
      <wildness>0.05</wildness>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <nameOnTameChance>1</nameOnTameChance>
      <manhunterOnTameFailChance>0.05</manhunterOnTameFailChance>
      <herdAnimal>true</herdAnimal>
	  <herdMigrationAllowed>false</herdMigrationAllowed>
	  <nuzzleMtbHours>5</nuzzleMtbHours>
      <lifeExpectancy>50</lifeExpectancy>
      <useMeatFrom>Cat</useMeatFrom>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.3</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Cat_Injured</soundWounded>
          <soundDeath>Pawn_Cat_Death</soundDeath>
          <soundCall>Pawn_Cat_Call</soundCall>
          <soundAngry>Pawn_Cat_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalExotic</li>
    </tradeTags>
	<comps>
	  <li Class="ExtendTheCat.ExC_CompProperties_Stay">
		<CommandLabel>Stay</CommandLabel>
		<CommandDesk>この場で待機します。</CommandDesk>
		<CommandIconPath>Icon/Command/StayHere</CommandIconPath>
      </li>
	  <li Class="ExtendTheCat.ExC_CompProperties_Goto">
		<CommandLabel>Go to</CommandLabel>
		<CommandDesk>指定場所まで移動します。</CommandDesk>
		<CommandIconPath>Icon/Command/Goto</CommandIconPath>
      </li>
	  <li Class="ExtendTheCat.ExC_CompProperties_Attack">
		<CommandLabel>Kill</CommandLabel>
		<CommandDesk>対象に攻撃します。</CommandDesk>
		<CommandIconPath>Icon/Command/Attack</CommandIconPath>
      </li>
	</comps>
  </ThingDef>
</Defs>