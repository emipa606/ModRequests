<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="OrganicProductBase">
    <defName>ExC_CatFood</defName>
    <label>cat food</label>
    <description>This is the food for cats, mixed with vegetables. You can eat it for human, but it doesn't taste good.</description>
    <thingCategories>
      <li>Foods</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Item/Resource/CatFood</texPath>
	  <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>1.1</MarketValue>
      <Mass>0.015</Mass>
      <Nutrition>0.10</Nutrition>
      <FoodPoisonChanceFixedHuman>0.01</FoodPoisonChanceFixedHuman>
    </statBases>
    <ingestible>
      <foodType>Kibble</foodType>
      <preferability>RawBad</preferability>
      <tasteThought>AteKibble</tasteThought>
      <optimalityOffsetHumanlikes>-30</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>25</optimalityOffsetFeedingAnimals>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>RawVegetable_Eat</ingestSound>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>ExC_Hediff_CatFine</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Ingredients" />
    </comps>
  </ThingDef>

