    <thingCategories>
      <li>Foods</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Item/Resource/Churu</texPath>
	  <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>1.4</MarketValue>
      <Mass>0.015</Mass>
      <Nutrition>0.40</Nutrition>
      <FoodPoisonChanceFixedHuman>0.01</FoodPoisonChanceFixedHuman>
    </statBases>
    <ingestible>
      <foodType>Kibble</foodType>
      <preferability>RawBad</preferability>
      <tasteThought>AteKibble</tasteThought>
      <optimalityOffsetHumanlikes>-30</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>30</optimalityOffsetFeedingAnimals>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>RawVegetable_Eat</ingestSound>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>ExC_Hediff_CatFrenzy</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Ingredients" />
    </comps>
  </ThingDef>

  <ThingDef ParentName="OrganicProductBase">
    <defName>ExC_CatCan</defName>
    <label>Canned Tuna</label>
    <description>Canned tuna is a cat's favorite food. Even humans can eat it.</description>
    <thingCategories>
      <li>Foods</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Item/Resource/CatCan</texPath>
	  <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>40</MarketValue>
      <Mass>0.015</Mass>
      <Nutrition>1.2</Nutrition>
      <FoodPoisonChanceFixedHuman>0</FoodPoisonChanceFixedHuman>
    </statBases>
    <ingestible>
      <foodType>Processed</foodType>
      <joy>0.10</joy>
      <joyKind>Gluttonous</joyKind>
      <preferability>MealLavish</preferability>
      <tasteThought>AteLavishMeal</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>RawVegetable_Eat</ingestSound>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>ExC_Hediff_CatEcstasy</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Ingredients" />
    </comps>
  </ThingDef>
</Defs>
