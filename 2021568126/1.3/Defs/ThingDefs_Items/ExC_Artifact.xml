<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== キューピッドの矢 ==============================-->
  <ThingDef ParentName="ArtifactBase">
    <thingClass>ThingWithComps</thingClass>
    <defName>ExC_CupiteArrow</defName>
    <label>Cupite arrow</label>
    <description>It is Cupid's arrow, created by an angel.\nIf you use it, you will be forced to become a lover with your chosen partner.</description>
    <tradeTags>
      <li>Artifact</li>
    </tradeTags>
    <graphicData>
      <texPath>Things/Item/Artifact/ExC_CupiteArrow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>1</stackLimit>
    <tradeability>Sellable</tradeability>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>1000</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.5</Mass>
    </statBases>
    <drawGUIOverlay>false</drawGUIOverlay>
    <comps>
      <li Class="CompProperties_Targetable">
        <compClass>CompTargetable_SinglePawn</compClass>
        <doCameraShake>true</doCameraShake>
      </li>
      <li>
        <compClass>ExtendTheCat.ExC_CompTargetEffect_Cupite</compClass>
      </li>
    </comps>
  </ThingDef>

  <!--=========================== 悪魔の契約書 ==============================-->
  <ThingDef ParentName="ResourceBase">
    <defName>ExC_DevilPaper</defName>
    <thingClass>ThingWithComps</thingClass>
    <techLevel>Archotech</techLevel>
    <thingCategories>
      <li>Artifacts</li>
    </thingCategories>
    <label>Devil paper</label>
    <description>It is Devil's paper, created by an devil.\nIf you use it, it will forcibly ruin all your relationships.</description>
    <tradeTags>
      <li>Artifact</li>
    </tradeTags>
    <graphicData>
      <texPath>Things/Item/Artifact/ExC_DevilPaper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>1</stackLimit>
    <tradeability>Sellable</tradeability>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>1000</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.5</Mass>
    </statBases>
    <drawGUIOverlay>false</drawGUIOverlay>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseArtifact</useJob>
        <useLabel>Decipher</useLabel>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>ExtendTheCat.ExC_CompUseEffect_Devil</compClass>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>CompUseEffect_DestroySelf</compClass>
      </li>
    </comps>
  </ThingDef>

  <!--=========================== 冒険家の宝の地図 ==============================-->
  <ThingDef ParentName="ResourceBase">
    <thingClass>ThingWithComps</thingClass>
    <defName>ExC_TreasureMap</defName>
    <label>Map of Treasure</label>
    <description>It is a map writed by cats. It seems to indicate a place where something is hidden.</description>
    <thingCategories>
      <li>Artifacts</li>
    </thingCategories>
    <tradeTags>
      <li>Artifact</li>
    </tradeTags>
    <graphicData>
      <texPath>Things/Item/Map/ExC_TresureMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>Sellable</tradeability>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>1</stackLimit>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>200</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.5</Mass>
    </statBases>
    <drawGUIOverlay>false</drawGUIOverlay>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseArtifact</useJob>
        <useLabel>Read me!</useLabel>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>ExtendTheCat.ExC_CompUseEffect_TreasureMap</compClass>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>CompUseEffect_DestroySelf</compClass>
      </li>
    </comps>
  </ThingDef>
</Defs>
