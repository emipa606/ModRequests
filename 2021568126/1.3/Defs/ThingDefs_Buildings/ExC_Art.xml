<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase" Name="ExC_ArtBase" Abstract="True">
    <thingClass>Building_Art</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <castEdgeShadows>true</castEdgeShadows>
    <useHitPoints>true</useHitPoints>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsArt</li>
    </thingCategories>
    <statBases>
      <Flammability>1.0</Flammability>
	  <SellPriceFactor>1.10</SellPriceFactor>
    </statBases>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
		<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

  
  
  <!--================================ Sculptures ======================================-->
  <ThingDef ParentName="ExC_ArtBase">
    <defName>ExC_BeckoningCat</defName>
    <label>Beckoning Cat</label>
    <description>This is a figurine in the form of a beckoning cat. The cat's hair is collected and made.</description>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/BeckoningCat</texPath>
      <shaderType>CutoutComplex</shaderType>
	  <drawSize>(2,2)</drawSize>
    </graphicData>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Mass>3</Mass>
      <Beauty>100</Beauty>
      <WorkToMake>30000</WorkToMake>
    </statBases>
  </ThingDef>
  
	<!--==================== 豊穣の祈り ====================-->
	<ThingDef ParentName="ExC_ArtBase">
		<defName>ExC_GoodHarvest</defName>
		<label>Good harvest</label>
		<description>It is a lucky charm imitating rice bales.It encourages the growth of crops and brings about a grain richness.</description>
		<passability>Standable</passability>
		<pathCost>70</pathCost>
		<useHitPoints>true</useHitPoints>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Art/Farming</texPath>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<tickerType>Normal</tickerType>
		<fillPercent>0.3</fillPercent>
		<rotatable>false</rotatable>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>7</Mass>
			<Beauty>200</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Lifespan">
				<lifespanTicks>7500</lifespanTicks>
			</li>
			<li Class="ExtendTheCat.ExC_CompProperties_HarvestParty">
				<BaseTick>750</BaseTick>
			</li>
		</comps>
	</ThingDef>
</Defs>
