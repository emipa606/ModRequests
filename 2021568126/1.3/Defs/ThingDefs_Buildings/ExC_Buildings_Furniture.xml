<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>ExC_CatBed</defName>
    <thingClass>Building_Bed</thingClass>
    <label>animal cat bed</label>
    <description>A soft bed for animals to sleep on. Fits any animal.</description>
    <rotatable>false</rotatable>
    <fillPercent>0.15</fillPercent>
    <pathCost>40</pathCost>
    <passability>PassThroughOnly</passability>
    <canOverlapZones>false</canOverlapZones>
    <graphicData>
      <texPath>Things/Building/ExC_CatBed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.6, 1.6)</drawSize>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <uiIconScale>0.80</uiIconScale>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <building>
      <bed_humanlike>false</bed_humanlike>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
    </building>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>400</WorkToBuild>
      <Mass>5</Mass>
      <BedRestEffectiveness>1.12</BedRestEffectiveness>
      <Comfort>0.95</Comfort>
      <ImmunityGainSpeedFactor>1.17</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>0.85</SurgerySuccessChanceFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>false</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
      <li Class="ExtendTheCat.CompProperties_UpperGraphic">
        <graphicData>
          <texPath>Things/Building/ExC_CatBed_UpperGraphic</texPath>
	      <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(1.6, 1.6)</drawSize>
        </graphicData>
        <altitudeLayer>MoteOverhead</altitudeLayer>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>ExC_CatMedicalBed</defName>
    <thingClass>Building_Bed</thingClass>
    <label>animal cat bed (Medical)</label>
    <description>A soft bed for animals to sleep on. Fits any animal.</description>
    <rotatable>false</rotatable>
    <fillPercent>0.15</fillPercent>
    <pathCost>40</pathCost>
    <passability>PassThroughOnly</passability>
    <canOverlapZones>false</canOverlapZones>
    <graphicData>
      <texPath>Things/Building/ExC_CatBed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.6, 1.6)</drawSize>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <uiIconScale>0.80</uiIconScale>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <building>
      <bed_humanlike>false</bed_humanlike>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
      <buildingSizeCategory>Small</buildingSizeCategory>
    </building>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>400</WorkToBuild>
      <Mass>5</Mass>
      <BedRestEffectiveness>1.12</BedRestEffectiveness>
      <Comfort>0.95</Comfort>
      <ImmunityGainSpeedFactor>1.17</ImmunityGainSpeedFactor>
      <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
      <SurgerySuccessChanceFactor>1.1</SurgerySuccessChanceFactor>
    </statBases>
    <researchPrerequisites>
      <li>HospitalBed</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>false</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
      <li Class="ExtendTheCat.CompProperties_UpperGraphic">
        <graphicData>
          <texPath>Things/Building/ExC_CatBed_UpperGraphic</texPath>
	      <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(1.6, 1.6)</drawSize>
        </graphicData>
        <altitudeLayer>MoteOverhead</altitudeLayer>
      </li>
    </comps>
  </ThingDef>
</Defs>
