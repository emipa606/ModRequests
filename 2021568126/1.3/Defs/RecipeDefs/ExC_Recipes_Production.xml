<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <RecipeDef>
    <defName>Make_NEKO_Wool</defName>
    <label>mix the cat's wool</label>
    <description>Combine various types of cat's wool to create cat pills.</description>
    <jobString>Making cat pills.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <workAmount>50</workAmount>
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>50</targetCountAdjustment>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
	      <thingDefs>
	        <li>ExC_Shiro_Wool</li>
	        <li>ExC_Kuro_Wool</li>
	        <li>ExC_Ash_Wool</li>
	        <li>ExC_Mike_Wool</li>
	        <li>ExC_Chatora_Wool</li>
	        <li>ExC_Sabatora_Wool</li>
	        <li>ExC_Kijitora_Wool</li>
	        <li>ExC_Creamtora_Wool</li>
	        <li>ExC_Point_Wool</li>
	        <li>ExC_Tortoise_Wool</li>
	        <li>ExC_Bicolor_Wool</li>
	        <li>ExC_Siamese_Wool</li>
	      </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ExC_Shiro_Wool</li>
        <li>ExC_Kuro_Wool</li>
        <li>ExC_Ash_Wool</li>
        <li>ExC_Mike_Wool</li>
        <li>ExC_Chatora_Wool</li>
        <li>ExC_Sabatora_Wool</li>
        <li>ExC_Kijitora_Wool</li>
	    <li>ExC_Creamtora_Wool</li>
        <li>ExC_Point_Wool</li>
        <li>ExC_Tortoise_Wool</li>
        <li>ExC_Bicolor_Wool</li>
        <li>ExC_Siamese_Wool</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ExC_NEKO_Wool>50</ExC_NEKO_Wool>
    </products>
    <workSkill>Crafting</workSkill>
  </RecipeDef>


