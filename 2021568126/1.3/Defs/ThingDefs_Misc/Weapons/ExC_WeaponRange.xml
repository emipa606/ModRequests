<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>ExC_Gun_KC_Rifle</defName>
    <label>kitty crack rifle</label>
    <description>This gun was made from kitty crack. There is no damage if you attack, but a cat will chase you.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ExC_KC_Rifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>2.0</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.95</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>2.00</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Plasteel>50</Plasteel>
      <ExC_Churu>200</ExC_Churu>
    </costList>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ExC_KC_Bullet</defaultProjectile>
        <warmupTime>3.0</warmupTime>
        <range>35</range>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>ExC_KC_Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>4</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>ExC_KC_Bullet</defName>
    <label>KC shot</label>
    <graphicData>
      <texPath>Things/Projectile/ExC_KC_Bullet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>ExC_KC_Blunt</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <armorPenetrationBase>0.35</armorPenetrationBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>


  <ThingDef ParentName="BaseBullet">
    <defName>ExC_Proj_Shuriken</defName>
    <label>手裏剣</label>
    <graphicData>
      <texPath>Icon/Command/Shuriken</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <armorPenetrationBase>0.95</armorPenetrationBase>
      <stoppingPower>6</stoppingPower>
      <speed>30</speed>
    </projectile>
  </ThingDef>
</Defs>