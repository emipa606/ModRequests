    </RecipeDef>

    <RecipeDef ParentName="MakeStoneBlocksBulkBase">
        <defName>Make_SteelFromStoneSandstone</defName>
        <label>Extract steel from Sandstone x4</label>
        <description>Carefully extract the steel from the sandstone chunks, losing the stones in the process.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ChunkSandstone</li>
                    </thingDefs>
                </filter>
                <count>4</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>ChunkSandstone</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Steel>10</Steel>
        </products>
    </RecipeDef>

