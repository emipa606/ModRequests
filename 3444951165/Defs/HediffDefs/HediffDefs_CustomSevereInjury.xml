<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>SevereHeadInjury</defName>
    <label>Severe Head Injury</label>
    <description>A severe head wound from a failed End It attempt. Immediate treatment is required. Once treated, a recovery phase will begin.</description>
    <hediffClass>EndItMod.SevereHeadInjury</hediffClass>
    <tendable>true</tendable>
    <comps>
      <li Class="Verse.HediffCompProperties_TendDuration" />
    </comps>
    <isBad>true</isBad>
    <stages>
      <li>
        <label>Severe Head Injury</label>
        <minSeverity>0</minSeverity>
        <painOffset>0.45</painOffset>
        <lifeThreatening>false</lifeThreatening>
        <painFactor>1</painFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.30</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.55</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.30</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <setMax>0.40</setMax>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <setMax>0.10</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>Critical Head Injury</label>
        <minSeverity>1</minSeverity>
        <painOffset>0.75</painOffset>
        <lifeThreatening>true</lifeThreatening>
        <painFactor>1</painFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.04</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.0</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.10</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <setMax>0.0</setMax>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <setMax>0.00</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>7.5</painPerSeverity>
      <averagePainPerSeverityPermanent>1</averagePainPerSeverityPermanent>
      <bleedRate>5</bleedRate>
      <canMerge>false</canMerge>
      <destroyedLabel>Dead</destroyedLabel>
      <destroyedOutLabel>Dead</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
