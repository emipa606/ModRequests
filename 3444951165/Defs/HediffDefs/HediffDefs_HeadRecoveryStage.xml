<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>HeadRecoveryStage</defName>
    <label>Severe Injury</label>
    <description>Due to the near fatal head injury. The pawn is bed bound for a few days and rest to recover</description>
    <hediffClass>EndItMod.HeadRecoveryStage</hediffClass>
    <tendable>false</tendable> <!-- This is fine now -->
    <isBad>false</isBad>
    <stages>
      <li>
        <label>Recovery</label>
        <minSeverity>0</minSeverity>
        <painOffset>0</painOffset>
        <lifeThreatening>false</lifeThreatening>
        <painFactor>0</painFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.04</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>0</painPerSeverity>
      <averagePainPerSeverityPermanent>0</averagePainPerSeverityPermanent>
      <bleedRate>0</bleedRate>
      <canMerge>false</canMerge>
      <destroyedLabel>Dead</destroyedLabel>
      <destroyedOutLabel>Dead</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
