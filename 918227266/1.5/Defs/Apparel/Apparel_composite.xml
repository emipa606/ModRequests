  <ThingDef ParentName="ApparelMakeableBase">
    <defName>PJ_GenFlight_Y</defName>
    <label>Yellow Flight Suit</label>
    <techLevel>Spacer</techLevel>
    <description>A typical flight suit, often worn by Rebel pilots. This yellow version has been available for commercial and private purchase for years, and as such is quite common.</description>
    <graphicData>
      <texPath>General/Gear/Jumpsuit/PilotJumpsuitY</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>1</Mass>
      <MaxHitPoints>350</MaxHitPoints>
      <MarketValue>100</MarketValue>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
      <ArmorRating_Heat>0.3</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
    </statBases>
    <costList>
      <Steel>8</Steel>
      <Cloth>120</Cloth>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <tags>
        <li>PJ_Rebel</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <wornGraphicPath>General/Gear/Jumpsuit/PilotJumpsuitY</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>6</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>