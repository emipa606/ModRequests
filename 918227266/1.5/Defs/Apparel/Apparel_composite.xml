<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArmorPJMachineableBase">
    <defName>PJ_CompArmor</defName>
    <label>Composite armor</label>
    <techLevel>Spacer</techLevel>
    <description>There was a time and place where everyone was wearing this armor. Battles ravaged across many planets.</description>
    <graphicData>
      <texPath>General/Gear/Comp/Comp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
    </recipeMaker>
    <costList>
      <Steel>8</Steel>
      <Plasteel>120</Plasteel>
      <ComponentIndustrial>12</ComponentIndustrial>
    </costList>
    <statBases>
      <Mass>14</Mass>
      <WorkToMake>159000</WorkToMake>
      <MaxHitPoints>500</MaxHitPoints>
      <MarketValue>4050</MarketValue>
      <ArmorRating_Sharp>1.85</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.72</ArmorRating_Blunt>
      <ArmorRating_Heat>0.54</ArmorRating_Heat>
      <Insulation_Cold>34</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>
      <EquipDelay>8</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <tags>
        <li>PJ_Comp</li>
      </tags>
      <wornGraphicPath>General/Gear/Comp/Comp</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
