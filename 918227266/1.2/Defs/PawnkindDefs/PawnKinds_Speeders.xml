<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Speeder -->
  <ThingDef ParentName="BaseWalker">
    <defName>SWFactions_SpeederThing</defName>
    <label>Speeder</label>
    <description>A landspeeder redesigned for planetary patrol that is well armored and mounts a light repeating blaster on the main body. The blaster had a 180 degrees fire arc and was fired by the gunner in the forward passenger seat.</description>
    <statBases>
      <MoveSpeed>4</MoveSpeed>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.45</ArmorRating_Sharp>
      <MeatAmount>0</MeatAmount>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttackDamage</verbClass>
        <defaultCooldownTime>4.65</defaultCooldownTime>
        <meleeDamageBaseAmount>40</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>LeftBlade</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttackDamage</verbClass>
        <defaultCooldownTime>4.65</defaultCooldownTime>
        <meleeDamageBaseAmount>40</meleeDamageBaseAmount>
        <meleeDamageDef>Cut</meleeDamageDef>
        <linkedBodyPartsGroup>RightBlade</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttackDamage</verbClass>
        <defaultCooldownTime>3.65</defaultCooldownTime>
        <meleeDamageBaseAmount>7</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
    </verbs>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>CompVehicle_Simple</thinkTreeMain>
      <body>SWFactions_SpeederHull</body>
      <baseBodySize>1.0</baseBodySize>
      <baseHealthScale>10.0</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>PJ_AT_Damage</soundWounded>
          <soundDeath>PJ_AT_Damage</soundDeath>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>
        <min>3000</min>
        <max>6000</max>
      </soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
    </race>
    <recipes>
      <li>SWFactions_RepairsSpeeder</li>
    </recipes>
    <butcherProducts>
      <Steel>40</Steel>
      <Plasteel>25</Plasteel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </butcherProducts>
    <comps>
      <li Class="CompVehicle.CompProperties_Vehicle">
        <vehicleType>LandHover</vehicleType>
        <movementHandling>HandlerRequired</movementHandling>
        <weaponHandling>HandlerRequired</weaponHandling>
        <manipulationHandling>Incapable</manipulationHandling>
        <soundEntry>PJ_SpeederCall</soundEntry>
        <soundEject>PJ_SpeederCall</soundEject>
        <soundMoving>PJ_SpeederMoving</soundMoving>
        <ejectIfBelowHealthPercent>0.25</ejectIfBelowHealthPercent>
        <seatHitDamageFactor>1.75</seatHitDamageFactor>
        <seatHitCriticalHitChance>0.03</seatHitCriticalHitChance>
        <canBeDowned>true</canBeDowned>
        <canWiggleWhenDowned>false</canWiggleWhenDowned>
        <worldSpeedFactor>4.0</worldSpeedFactor>
        <roles>
          <li>
            <label>driver</label>
            <labelPlural>drivers</labelPlural>
            <handlingTypes>Movement</handlingTypes>
            <slots>1</slots>
            <slotsToOperate>1</slotsToOperate>
            <slotTag>PilotSeat</slotTag>
          </li>
          <li>
            <label>gunner</label>
            <labelPlural>gunners</labelPlural>
            <handlingTypes>Weapons</handlingTypes>
            <slots>1</slots>
            <slotsToOperate>1</slotsToOperate>
            <slotTag>GunnerSeat</slotTag>
          </li>
          <li>
            <label>passenger</label>
            <labelPlural>passengers</labelPlural>
            <slots>2</slots>
            <slotTag>PassengerSeat</slotTag>
          </li>
        </roles>
      </li>
    </comps>
  </ThingDef>
  <PawnKindDef>
    <defName>SWFactions_SpeederKindImp</defName>
    <label>Imperial patrol speeder</label>
    <race>SWFactions_SpeederThing</race>
    <combatPower>260</combatPower>
    <defaultFactionType>PJ_GalacticEmpire</defaultFactionType>
    <aiAvoidCover>true</aiAvoidCover>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Vehicles/SpeederImp</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>4.3</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>
      <min>3200</min>
      <max>3200</max>
    </weaponMoney>
    <weaponTags>
      <li>PJ_Speeder_Weapon</li>
    </weaponTags>
  </PawnKindDef>
  <PawnKindDef>
    <defName>SWFactions_SpeederKindReb</defName>
    <label>Rebel patrol speeder</label>
    <race>SWFactions_SpeederThing</race>
    <combatPower>260</combatPower>
    <defaultFactionType>PJ_RebelFac</defaultFactionType>
    <aiAvoidCover>true</aiAvoidCover>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Vehicles/SpeederRed</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>4.3</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>
      <min>3200</min>
      <max>3200</max>
    </weaponMoney>
    <weaponTags>
      <li>PJ_Speeder_Weapon</li>
    </weaponTags>
  </PawnKindDef>
</Defs>