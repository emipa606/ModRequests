<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>PJ_JFac_Robe</defName>
    <label>Custom Jedi Robe</label>
    <description>A Jedi's robes</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Robes/JRobe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.7</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.95</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.95</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
      <PsychicSensitivity>-0.05</PsychicSensitivity>
      <MoveSpeed>0.20</MoveSpeed>
      <PlantWorkSpeed>0.025</PlantWorkSpeed>
      <MentalBreakThreshold>-0.02</MentalBreakThreshold>
      <MeleeHitChance>0.035</MeleeHitChance>
      <AimingDelayFactor>-0.01</AimingDelayFactor>
      <NegotiationAbility>0.025</NegotiationAbility>
      <SocialImpact>0.015</SocialImpact>
      <TradePriceImprovement>0.025</TradePriceImprovement>
      <MedicalOperationSpeed>0.03</MedicalOperationSpeed>
      <WorkSpeedGlobal>0.025</WorkSpeedGlobal>
      <MiningSpeed>0.05</MiningSpeed>
      <MeleeDodgeChance>0.3</MeleeDodgeChance>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Robes/JRobe</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>PJ_JediRobes</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.52,0.529,0.572,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.501,0.403,0.321,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.603,0.501,0.411,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
