<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ATST -->
  <ThingDef ParentName="BaseWalker">
    <defName>SWFactions_WalkerThing</defName>
    <label>AT-ST</label>
    <description>The All Terrain Scout Transport (AT-ST), also known (derisively) as the chicken walker for its two-legged design, was a bipedal walker used by the Galactic Republic during the late Clone Wars and, later and more extensively, by the Galactic Empire during the Galactic Civil War. It is a successor of the AT-XT.</description>
    <statBases>
      <MoveSpeed>4</MoveSpeed>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.45</ArmorRating_Sharp>
      <MeatAmount>0</MeatAmount>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttackDamage</verbClass>
        <defaultCooldownTime>4.65</defaultCooldownTime>
        <meleeDamageBaseAmount>40</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>LeftBlade</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttackDamage</verbClass>
        <defaultCooldownTime>4.65</defaultCooldownTime>
        <meleeDamageBaseAmount>40</meleeDamageBaseAmount>
        <meleeDamageDef>Cut</meleeDamageDef>
        <linkedBodyPartsGroup>RightBlade</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttackDamage</verbClass>
        <defaultCooldownTime>3.65</defaultCooldownTime>
        <meleeDamageBaseAmount>7</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
    </verbs>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>ThinkVehicle</thinkTreeMain>
      <thinkTreeConstant>ThinkVehicleConstant</thinkTreeConstant>
      <body>SWFactions_ATSTHull</body>
      <baseBodySize>1.0</baseBodySize>
      <baseHealthScale>10.0</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>PJ_AT_Damage</soundWounded>
          <soundDeath>PJ_AT_Damage</soundDeath>
          <soundCall>PJ_AT_Idle</soundCall>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>
        <min>3000</min>
        <max>6000</max>
      </soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
    </race>
    <recipes>
      <li>SWFactions_RepairsATST</li>
    </recipes>
    <butcherProducts>
      <Steel>40</Steel>
      <Plasteel>25</Plasteel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </butcherProducts>
    <comps>
      <li Class="CompVehicle.CompProperties_Vehicle">
        <vehicleType>LandWalker</vehicleType>
        <movementHandling>HandlerRequired</movementHandling>
        <weaponHandling>HandlerRequired</weaponHandling>
        <manipulationHandling>Incapable</manipulationHandling>
        <soundEntry>Pawn_Mech_Centipede_Wounded</soundEntry>
        <soundEject>Pawn_Mech_Centipede_Wounded</soundEject>
        <ejectIfBelowHealthPercent>0.25</ejectIfBelowHealthPercent>
        <seatHitDamageFactor>1.75</seatHitDamageFactor>
        <seatHitCriticalHitChance>0.03</seatHitCriticalHitChance>
        <canBeDowned>true</canBeDowned>
        <canWiggleWhenDowned>false</canWiggleWhenDowned>
        <roles>
          <li>
            <label>pilot</label>
            <labelPlural>pilots</labelPlural>
            <handlingTypes>Movement</handlingTypes>
            <slots>1</slots>
            <slotsToOperate>1</slotsToOperate>
            <slotTag>PilotSeat</slotTag>
          </li>
          <li>
            <label>gunner</label>
            <labelPlural>gunners</labelPlural>
            <handlingTypes>Weapons</handlingTypes>
            <slots>1</slots>
            <slotsToOperate>1</slotsToOperate>
            <slotTag>GunnerSeat</slotTag>
          </li>
          <li>
            <label>passenger</label>
            <labelPlural>passengers</labelPlural>
            <slots>2</slots>
            <slotTag>PassengerSeat</slotTag>
          </li>
        </roles>
      </li>
      <li Class="CompLumbering.CompProperties_Lumbering">
        <cycledGraphic>
          <texPath>Imp/Walkers/ATSTCycle/ATST</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>4.3</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </cycledGraphic>
        <sound>PJ_ATST_Step</sound>
        <secondsPerStep>1.15</secondsPerStep>
        <secondsBetweenSteps>0.5</secondsBetweenSteps>
      </li>
    </comps>
  </ThingDef>
  <PawnKindDef>
    <defName>SWFactions_WalkerKind</defName>
    <label>AT-ST</label>
    <race>SWFactions_WalkerThing</race>
    <combatPower>260</combatPower>
    <defaultFactionType>PlayerColony</defaultFactionType>
    <aiAvoidCover>true</aiAvoidCover>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Imp/Walkers/ATST/ATST</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>4.3</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>
      <min>3200</min>
      <max>3200</max>
    </weaponMoney>
    <weaponTags>
      <li>PJ_ATST_Weapon</li>
    </weaponTags>
  </PawnKindDef>
