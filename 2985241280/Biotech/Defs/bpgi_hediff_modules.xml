<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_BM_Mechanitor</defName>
        <label>brain bodule: mechanitor</label>
        <description>A brain module enhancing ability of mechanitors.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <statOffsets>
                    <MechBandwidth>4582</MechBandwidth>
                    <MechControlGroups>18</MechControlGroups>
                    <MechRemoteRepairDistance>99.9</MechRemoteRepairDistance>
                    <MechRemoteShieldDistance>99.9</MechRemoteShieldDistance>
                    <MechRemoteShieldEnergy>9999999</MechRemoteShieldEnergy>
                    <MechFormingSpeed>9999</MechFormingSpeed>
                    <WorkSpeedGlobalOffsetMech>99.5</WorkSpeedGlobalOffsetMech>
                    <MechRepairSpeed>9999999</MechRepairSpeed>
                </statOffsets>
                <statFactors>
                    <IncomingDamageFactor>0</IncomingDamageFactor>
                    <Flammability>0</Flammability>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_GiveAbility">
                <abilityDefs>
                    <li>RemoteRepair</li>
                    <li>RemoteShield</li>
                    <li>PGIMechanitor_LongjumpMech</li>
                    <li>PGIMechanitor_SmokepopMech</li>
                    <li>PGIMechanitor_FirefoampopMech</li>
                    <li>PGIMechanitor_FireBurst</li>
                    <li>PGIMechanitor_ResurrectionMech</li>
                </abilityDefs>
            </li>
        </comps>
    </HediffDef>

    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_TM_Sanguophage</defName>
        <label>torso module: sanguophage</label>
        <description>A small module making a common pawn genetic superman.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <statFactors>
                    <IncomingDamageFactor>0</IncomingDamageFactor>
                    <Flammability>0</Flammability>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_GiveAbility">
                <abilityDefs>
                    <li>PGISanguophage_Coagulate</li>
                    <li>PGISanguophage_PiercingSpine</li>
                    <li>PGISanguophage_Resurrect</li>
                    <li>PGISanguophage_Longjump</li>
                    <li>PGISanguophage_AcidSpray</li>
                    <li>PGISanguophage_FoamSpray</li>
                    <li>PGISanguophage_FireSpew</li>
                    <li>PGISanguophage_AnimalWarcall</li>
                    <li>PGISanguophage_Bloodfeed</li>
                </abilityDefs>
            </li>
        </comps>    
    </HediffDef>

    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_TM_Fertility</defName>
        <label>torso module: fertility</label>
        <description>A small module improves fertility of pawns.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <statFactors>
                    <Fertility>60</Fertility>
                </statFactors>
                <statOffsets>
                    <Fertility>60</Fertility>
                </statOffsets>
                <fertilityFactor>60</fertilityFactor>
            </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_TM_RapidGrowth</defName>
        <label>torso module: rapid growth</label>
        <description>Passing a day as a year. Note: in-vat only.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <statOffsets>
                    <GrowthVatOccupantSpeed>60</GrowthVatOccupantSpeed>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>
</Defs>
