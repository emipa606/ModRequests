<Defs>
    <ThingDef ParentName="PGI_MinigunBase">
        <defName>PGI_PerfectHellsphereTurret</defName>
        <label>perfect hellsphere turret</label>
        <description>perfect choice for colony defense.</description>
        <graphicData>
            <texPath>Building/Turret/perfectminigun_hellsphere</texPath>
        </graphicData>
        <uiIconPath>Building/Turret/perfectminigun_hellsphere</uiIconPath>
        <building>
            <turretGunDef>Gun_PGI_PerfectHellsphereTurret</turretGunDef>
