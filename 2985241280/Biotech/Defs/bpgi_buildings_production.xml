<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PGI_PSpotBase">
        <defName>PGI_BiotechWorksite</defName>
        <label>perfect biotech worksite</label>
        <graphicData>
            <texPath>Building/Worksite/pgibiotechsite</texPath>
        </graphicData>
    </ThingDef>
    <ThingDef ParentName="PGI_PFurnitureBase">
        <thingClass>Building_MechGestator</thingClass>
        <defName>PGI_PerfectMechGestator</defName>
        <label>perfect mech gestator</label>
        <description>A device for quickly assembling mechanoids.</description>
        <graphicData>
            <texPath>Building/Worksite/pmechgestator</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>2</drawSize>
            <drawRotated>false</drawRotated>
        </graphicData>
        <containedPawnsSelectable>true</containedPawnsSelectable>
        <rotatable>true</rotatable>
        <size>(2,2)</size>
        <uiIconPath>Building/Worksite/pmech</uiIconPath>
        <uiIconScale>1.5</uiIconScale>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,0)</interactionCellOffset>
        <statBases>
            <WorkTableWorkSpeedFactor>100</WorkTableWorkSpeedFactor>
        </statBases>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <building>
            <buildingTags>
                <li>Production</li>
                <li>Biotech</li>
            </buildingTags>
            <barDrawData>
                <north>
                    <preRotationOffset>(-0.505, 0.478)</preRotationOffset>
                    <size>(0.629, 0.069)</size>
                </north>
                <south>
                    <preRotationOffset>(-0.503, 0.457)</preRotationOffset>
                    <size>(0.654, 0.076)</size>
                </south>
                <east>
                    <preRotationOffset>(0.499,-0.484)</preRotationOffset>
                    <size>(0.663, 0.069)</size>
                </east>
                <west>
                    <preRotationOffset>(-0.497,-0.478)</preRotationOffset>
                    <size>(0.646, 0.075)</size>
                </west>
            </barDrawData>
            <formingGraphicData>
                <texPath>Building/Worksite/pmech</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>(1.4,1.4)</drawSize>
            </formingGraphicData>
            <formingMechBobSpeed>0.001</formingMechBobSpeed>
            <formingMechYBobDistance>0.08</formingMechYBobDistance>
            <formingMechPerRotationOffset>
                <li>(0, 0, 0.225)</li>
                <li>(-0.15, 0, 0.225)</li>
                <li>(0, 0, 0.225)</li>
                <li>(0.15, 0, 0.225)</li>
            </formingMechPerRotationOffset>
            <mechGestatorCylinderGraphic>
                <texPath>Building/Worksite/pmechtop</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(2,2)</drawSize>
                <shaderType>Transparent</shaderType>
            </mechGestatorCylinderGraphic>
            <mechGestatorTopGraphic>
                <texPath>Building/Worksite/pmechtop</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(2,2)</drawSize>
            </mechGestatorTopGraphic>
            <gestatorFormingMote>
                <north>MechGestatorFormingLarge_North</north>
                <east>MechGestatorFormingLarge_East</east>
                <west>MechGestatorFormingLarge_West</west>
                <south>MechGestatorFormingLarge_South</south>
            </gestatorFormingMote>
            <gestatorCycleCompleteMote>
                <north>MechGestatorCycleCompleteLarge_North</north>
                <east>MechGestatorCycleCompleteLarge_East</east>
                <west>MechGestatorCycleCompleteLarge_West</west>
                <south>MechGestatorCycleCompleteLarge_South</south>
            </gestatorCycleCompleteMote>
            <gestatorFormedMote>
                <north>MechGestatorFormedLarge_North</north>
                <east>MechGestatorFormedLarge_East</east>
                <west>MechGestatorFormedLarge_West</west>
                <south>MechGestatorFormedLarge_South</south>
            </gestatorFormedMote>
        </building>
        <comps>
            <li Class="CompProperties_WasteProducer"/>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>1</basePowerConsumption>
                <idlePowerDraw>0</idlePowerDraw>
                <transmitsPower>true</transmitsPower>
            </li>
        </comps>
    </ThingDef>
</Defs>