<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PGI_PFurnitureBase">
		<defName>PGI_PerfectCooker</defName>
		<label>perfect cooker</label>
		<description>A facility that used for processing things, from food to manufacturing items.</description>
		<thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
		<tickerType>Rare</tickerType>
		<graphicData>
			<texPath>Building/Various/pgicooker</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<size>(1,1)</size>
		<comps>
			<li Class="ItemProcessor.CompProperties_ItemProcessor">
				<buildingOnGraphic>Building/Various/pgicookerfull</buildingOnGraphic>
				<numberOfInputs>1</numberOfInputs>
				<acceptsNoneAsInput>true</acceptsNoneAsInput>
				<transfersIngredientLists>false</transfersIngredientLists>
                <destroyIngredientsAtStartOfProcess>true</destroyIngredientsAtStartOfProcess>
				<isAutoMachine>false</isAutoMachine>
				<isSemiAutomaticMachine>true</isSemiAutomaticMachine>
				<isCompletelyAutoMachine>false</isCompletelyAutoMachine>
				<isAutoDropper>true</isAutoDropper>
			</li>
		</comps>
	</ThingDef>
</Defs>