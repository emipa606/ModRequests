        <defName>PGI_Buffer_SoS_SpaceHypoxia</defName>
        <label>perfect choker</label>
        <description>A device that suffocates nearby pawns by simply removing air.</description>
        <comps>
            <li Class="VFECore.CompProperties_HediffGiver">
                <hediffDef>SpaceHypoxia</hediffDef>
                <radius>14.9</radius>
                <severityIncrease>0.4</severityIncrease>
                <tickRate>60</tickRate>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="PGI_PHediffGiverGoodBase" MayRequire="kentington.saveourship2">
        <defName>PGI_Buffer_SoS_SpaceBeltBubbleHediff</defName>
        <label>perfect space bubbler</label>
        <description>A device that gives nearby pawn a protective bubble.</description>
        <comps>
            <li Class="VFECore.CompProperties_HediffGiver">
                <hediffDef>SpaceBeltBubbleHediff</hediffDef>
                <radius>14.9</radius>
                <severityIncrease>0.4</severityIncrease>
                <tickRate>60</tickRate>
            </li>
        </comps>
    </ThingDef>
