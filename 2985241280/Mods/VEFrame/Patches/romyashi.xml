                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <ItemProcessor.CombinationDef ParentName="PGI_ItemProcess_NoQualityBase">
		                    <defName>PGI_PerfectCookerBill_Romy_FlowerPetals</defName>
		                    <items>
		                    	<li>Romy_FlowerPetals</li>
		                    </items>
		                    <amount>
		                    	<li>25</li>
		                    </amount>
		                    <result>Romy_AncientPerfume</result>
