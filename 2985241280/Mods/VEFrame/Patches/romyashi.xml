            <li>Perfumes</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ItemProcessor.ItemAcceptedDef[defName="PGI_PerfectCooker_BillAccept"]/items</xpath>
                    <value>
