<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>False</enabled>
        <label>Remove yield cap? Your storeroom may suffer.</label>
        <operations>
            <li Class="PatchOperationRemove">
                <xpath>Defs/StatDef[defName="Comfort" or defName="Cleanliness" or defName="MiningYield" or defName="AnimalGatherYield" or defName="PlantHarvestYield" or defName="DrugHarvestYield" or defName="ButcheryFleshEfficiency" or defName="ButcheryMechanoidEfficiency"]/maxValue</xpath>
            </li>
        </operations>
    </Operation>
    
    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>False</enabled>
        <label>Remove armor rating cap?</label>
        <operations>
            <li Class="PatchOperationRemove">
                <xpath>Defs/StatDef[@Name="ArmorRatingBase"]/maxValue</xpath>
            </li>
        </operations>
    </Operation>

    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>False</enabled>
        <label>Remove stat cap for shooting accuracy? May cause problems.</label>
        <operations>
            <li Class="PatchOperationRemove">
                <xpath>Defs/StatDef[@Name="AccuracyBase"]/maxValue</xpath>
            </li>
        </operations>
    </Operation>

    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>False</enabled>
        <label>Make components and chemfuel recycleable?</label>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="ComponentIndustrial" or defName="ComponentSpacer" or defName="Chemfuel"]/intricate</xpath>
                <value>
                    <intricate>false</intricate>
                </value>
            </li>
        </operations>
    </Operation>
    
</Patch>