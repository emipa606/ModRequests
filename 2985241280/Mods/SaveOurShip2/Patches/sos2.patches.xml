<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/WorkGiverDef[defName="PGI_MainWork"]/fixedBillGiverDefs</xpath>
        <value>
            <li>PGI_SoS_ShiptechWorksite</li>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="PGI_PerfectPowerConduit" or defName="PGI_PerfectPowerConduit_Hide" or defName="PGI_PerfectPowerNexus" or @Name="PGI_PStructureBase"]/comps</xpath>
        <value>
            <li Class="SaveOurShip2.CompProps_ShipHeat">
                <compClass>SaveOurShip2.CompShipHeat</compClass>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="PGI_PerfectPod"]/comps</xpath>
        <value>
            <li Class="SaveOurShip2.CompProps_ShipHeat">
                <compClass>SaveOurShip2.CompShipHeatSink</compClass>
                <heatCapacity>6000000000</heatCapacity>
                <heatVent>60000000</heatVent>
                <heatLoss>220</heatLoss>
                <threat>0</threat>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThoughtDef[defName="ArchotechSporeThought"]/stages</xpath>
        <value>
            <stages>
                <li>
                    <label>metafractal hyperconsciousness</label>
                    <description>I am now a vastly greater self.</description>
                    <baseMoodEffect>50</baseMoodEffect>
                </li>
            </stages>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Ship_AvatarCasket" or defName="ShipArchotechSpore" or defName="ArchotechUplink" or defName="ShipArchotechPillarA" or defName="ShipArchotechPillarB" or defName="ShipArchotechPillarC" or defName="ShipArchotechPillarD"]</xpath>
        <value>
            <useHitPoints>false</useHitPoints>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Ship_ComputerCore" or defName="ShipArchotechSpore"]</xpath>
        <value>
            <minifiedDef>MinifiedThing</minifiedDef>
            <thingCategories>
                <li>BuildingsSpecial</li>
            </thingCategories>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Ship_ComputerCore" or defName="ShipArchotechSpore"]/statBases</xpath>
        <value>
            <Mass>100</Mass>
        </value>
    </Operation>
</Patch>