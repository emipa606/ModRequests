<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PGI_PSpotBase">
        <designatorDropdown>PGI_PSpots</designatorDropdown>
        <defName>PGI_BeekeepingSite</defName>
        <label>beekeeping worksite</label>
        <graphicData>
            <texPath>Building/Worksite/pgibeesite</texPath>
        </graphicData>
        <statBases>
            <WorkTableEfficiencyFactor>10</WorkTableEfficiencyFactor>
        </statBases>
        <recipes>
            <li>RB_ExtracTemperateHive</li>
            <li>RB_ExtracMildHive</li>
            <li>RB_CentrifugeAnyComb</li>
            <li>RB_WaxToChemfuel</li>
            <li>AA_Make_Kibble_Bees</li>
            <li>RB_MeadMust</li>
            <li>RB_PreserveMeat</li>
            <li>RB_PreserveVegetables</li>
            <li>RB_CookHoneyMealSimple</li>
            <li>RB_CookHoneyMealSimpleBulk</li>
            <li>RB_CookHoneyMealFine</li>
            <li>RB_CookHoneyMealFineBulk</li>
            <li>RB_CookHoneyMealLavish</li>
            <li>RB_CookHoneyMealLavishBulk</li>
        </recipes>
        <modExtensions>
            <li Class="RecipeInheritance.ThingDefExtension">
                <inheritRecipesFrom>
                    <li>RB_Advanced_Honey_Centrifuge</li>
                </inheritRecipesFrom>
            </li>
        </modExtensions>
    </ThingDef>
    <ThingDef ParentName="PGI_PFurnitureBase">
        <defName>PGI_RB_Beehouse</defName>
        <label>perfect beehouse</label>
        <description>A perfect beehouse perfect for bees.</description>
        <thingClass>RimBees.Building_Beehouse</thingClass>
        <graphicData>
            <texPath>Building/Various/pgibeehive</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <rotatable>false</rotatable>
        <costList>
            <PGI_PerfectlyGenericItem>1</PGI_PerfectlyGenericItem>
        </costList>
        <building>
            <spawnedConceptLearnOpportunity>BenLubarsRimBeesPatches_BeeHouse</spawnedConceptLearnOpportunity>
            <wantsHopperAdjacent>true</wantsHopperAdjacent>
        </building>
        <tickerType>Rare</tickerType>
        <size>(1,1)</size>
        <comps>
            <li Class="RimBees.CompProperties_BeeHouse">
                <isBeehouse>true</isBeehouse>
                <electricBeehouse>false</electricBeehouse>
                <climatizedBeehouse>true</climatizedBeehouse>
                <beehouseRate>0</beehouseRate>
            </li>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
        <placeWorkers>
            <li>RimBees.PlaceWorker_ShowPollinationRadius</li>
        </placeWorkers>
    </ThingDef>

    <WorkGiverDef>
        <defName>PGI_RB_BeesWork</defName>
        <label>Manipulating bees</label>
        <giverClass>WorkGiver_DoBill</giverClass>
        <workType>RB_BeekeepingWork</workType>
        <priorityInType>250</priorityInType>
        <fixedBillGiverDefs>
            <li>PGI_BeekeepingSite</li>
        </fixedBillGiverDefs>
        <verb>craft</verb>
        <gerund>Manipulating bees.</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

    <TerrainDef ParentName="RB_WaxFloorBase">
        <defName>PGI_WaxFloor</defName>
        <label>perfect beeswax floor</label>
        <color>(36,120,36)</color>
        <costList />
    </TerrainDef>
    <TerrainDef ParentName="RB_WaxTiledFloorBase">
        <defName>PGI_WaxTileFloor</defName>
        <label>perfect beeswax tiles</label>
        <color>(36,120,36)</color>
        <costList />
    </TerrainDef>
</Defs>