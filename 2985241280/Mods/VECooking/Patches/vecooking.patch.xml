<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VCE_Grill" or defName="VCE_DeepFrier" or defName="VCE_CanningMachine" or defName="VCE_CondimentPrepTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
        <value>
            <li>PGI_PerfectEndtable</li>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ItemProcessor.ItemAcceptedDef[defName="PGI_PerfectCooker_BillAccept"]/items</xpath>
        <value>
            <li>Milk</li>
            <li>VCE_UncookedSoupSimple</li>
            <li>VCE_UncookedSoupFine</li>
            <li>VCE_UncookedSoupLavish</li>
            <li>VCE_UncookedSoupGourmet</li>
            
			<li MayRequire="biomesteam.biomescaverns">BMT_RawRoyalBracket</li>

            <li MayRequire="sarg.alphaanimals">AA_BlueMilk</li>
            <li MayRequire="sarg.alphaanimals">AA_GowMilk</li>
            <li MayRequire="sarg.alphaanimals">AA_NightMilk</li>
            
            <li MayRequire="vanillaexpanded.vcookestews">VCE_UncookedStewSimple</li>
            <li MayRequire="vanillaexpanded.vcookestews">VCE_UncookedStewFine</li>
            <li MayRequire="vanillaexpanded.vcookestews">VCE_UncookedStewLavish</li>
            
            <li MayRequire="vanillaexpanded.vcookesushi">VCE_RawSoybean</li>

            <li MayRequire="vanillaexpanded.vplantse">VCE_RawTomatoes</li>
            <li MayRequire="vanillaexpanded.vplantse">VCE_RawPepper</li>
            
            <li MayRequire="vanillaexpanded.vgeneticse">GR_WeirdMilk</li>
            <li MayRequire="vanillaexpanded.vgeneticse">GR_MechaMilk</li>
            <li MayRequire="vanillaexpanded.vgeneticse">GR_BearffaloMilk</li>
            <li MayRequire="vanillaexpanded.vgeneticse">GR_ThrumffaloMilk</li>
            <li MayRequire="vanillaexpanded.vgeneticse">GR_MuffalochickenMilk</li>
            <li MayRequire="vanillaexpanded.vgeneticse">GR_ChickenffaloMilk</li>
            <li MayRequire="vanillaexpanded.vgeneticse">GR_MuffalobearMilk</li>
            <li MayRequire="vanillaexpanded.vgeneticse">GR_WolffaloMilk</li>
            <li MayRequire="vanillaexpanded.vgeneticse">GR_RatMilk</li>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>Vanilla Cooking Expanded - Sushi</li>
	    </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VCE_SushiPrepTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
            <value>
                <li>PGI_PerfectEndtable</li>
            </value>
	    </match>
    </Operation>
</Patch>