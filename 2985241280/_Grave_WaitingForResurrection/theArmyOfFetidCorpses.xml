<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>The Army Of Fetid Corpses</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Recipes -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
    					<RecipeDef ParentName="PGIRecipe_PerfectWorksiteBase">
    					    <defName>PGIMake_tAoFC_Supply_Sack</defName>
    					    <label>make sack of supplies</label>
    					    <products>
    					        <Supply_Sack>1</Supply_Sack>
    					    </products>
    					</RecipeDef>
                    </value>
				</li>

                <!-- Mech Recipes -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <RecipeDef ParentName="PGIRecipe_PerfectMechGestatorBase">
                            <defName>PGI_tAoFC_PMech_CourierSix</defName>
                            <label>gestate militor "Courier Six"</label>
                            <products>
                                <Mech_CourierSix>1</Mech_CourierSix>
                            </products>
                            <descriptionHyperlinks>
                                <ThingDef>Mech_CourierSix</ThingDef>
                            </descriptionHyperlinks>
                        </RecipeDef>
                        <RecipeDef ParentName="PGIRecipe_PerfectMechGestatorBase">
                            <defName>PGI_tAoFC_PMech_GunSlinger</defName>
                            <label>gestate militor "Gun Slinger"</label>
                            <products>
                                <Mech_GunSlinger>1</Mech_GunSlinger>
                            </products>
                            <descriptionHyperlinks>
                                <ThingDef>Mech_GunSlinger</ThingDef>
                            </descriptionHyperlinks>
                        </RecipeDef>
                        <RecipeDef ParentName="PGIRecipe_PerfectMechGestatorBase">
                            <defName>PGI_tAoFC_PMech_CentipedeSheriff</defName>
                            <label>gestate centipede sheriff</label>
                            <products>
                                <Mech_CentipedeSheriff>1</Mech_CentipedeSheriff>
                            </products>
                            <descriptionHyperlinks>
                                <ThingDef>Mech_CentipedeSheriff</ThingDef>
                            </descriptionHyperlinks>
                        </RecipeDef>
                    </value>
				</li>

                <!-- Addons -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[@Name="PGI_PApparelBase"]/equippedStatOffsets</xpath>
                    <value>
                        <NecrotionResistance>114514</NecrotionResistance>
                        <NecrotionEnvironmentResistance>114514</NecrotionEnvironmentResistance>
                    </value>
				</li>
            </operations>
	    </match>
    </Operation>
    
</Patch>