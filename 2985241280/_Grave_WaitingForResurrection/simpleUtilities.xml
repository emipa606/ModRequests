<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>Simple Utilities: Fridge</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Modifications -->
				<li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="PGI_PerfectShelf"]/building/storageGroupTag</xpath>
                    <value>
                        <storageGroupTag>Fridge</storageGroupTag>
                    </value>
				</li>
				<li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="PGI_PerfectShelf"]</xpath>
                    <value>
                        <comps>
                            <li Class="CompProperties_Power">
                                <compClass>CompPowerTrader</compClass>
                                <basePowerConsumption>0</basePowerConsumption>
                                <shortCircuitInRain>false</shortCircuitInRain>
                                <transmitsPower>true</transmitsPower>
                            </li>
                        </comps>
                    </value>
				</li>
				<li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="PGI_PerfectShelf"]</xpath>
                    <value>
                        <li Class="SimpleFridge.Fridge"/>
                    </value>
				</li>
            </operations>
	    </match>
    </Operation>
    
</Patch>