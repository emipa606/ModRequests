<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>[RH2] Faction: V.O.I.D.</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Implants and Surgeries -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <HediffDef>
                            <hediffClass>VoidEvents.Hediff_Resurrection</hediffClass>
                            <defName>PGI_RH_ResurrectorImplant</defName>
                            <label>sit-up implant</label>
                            <labelNoun>implanted perfectly generic item.</labelNoun>
                            <description>A really quick resurrecting device.</description>
                            <spawnThingOnRemoved>PGI_PerfectlyGenericItem</spawnThingOnRemoved>
                            <isBad>false</isBad>
                            <modExtensions>
			                    <li Class="VoidEvents.ResurrectionOptions">
				                    <ticksToResurrect>0</ticksToResurrect>
			                    </li>
		                    </modExtensions>
                        </HediffDef>
                        <RecipeDef ParentName="PGI_PSurgeryCostBase">
                            <defName>PGI_RH_InstallResurrectorImplant</defName>
                            <label>install sit-up implant</label>
                            <addsHediff>PGI_RH_ResurrectorImplant</addsHediff>
                        </RecipeDef>
                    </value>
				</li>
                <!-- Recipes -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <RecipeDef ParentName="PGIRecipe_ConverterWorksiteBase">
                            <defName>PGI_RH_Nerotonin8B</defName>
                            <label>make nerotonin-8B</label>
                            <products>
                                <RH_Nerotonin8B>100</RH_Nerotonin8B>
                            </products>
                        </RecipeDef>
                    </value>
				</li>
            </operations>
	    </match>
    </Operation>
    
</Patch>