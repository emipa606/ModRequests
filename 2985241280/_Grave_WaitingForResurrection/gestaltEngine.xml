<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>Gestalt Engine</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Buildings -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <ThingDef ParentName="PGI_PFurnitureBase">
                            <defName>PGI_PGestaltEngine</defName>
                            <label>pgi gestalt engine</label>
                            <description>A super powerful gestalt engine. Its bandwidth is 6000000 and can manage 60 groups</description>
                            <graphicData>
                                <texPath>Things/Building/Biotech/GestaltEngine_MenuIcon</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                                <color>(27,155,12)</color>
                                <drawSize>2.2</drawSize>
                            </graphicData>
                            <size>(2,2)</size>
                            <building>
                                <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
                                <soundAmbient>GeothermalPlant_Ambience</soundAmbient>
                                <destroySound>BuildingDestroyed_Metal_Big</destroySound>
                                <buildingTags>
                                    <li>Mechanitor</li>
                                    <li>Gestalt</li>
                                </buildingTags>
                            </building>
                            <comps>
                                <li Class="CompProperties_Power">
                                    <compClass>CompPowerTrader</compClass>
                                    <basePowerConsumption>0</basePowerConsumption>
                                    <transmitsPower>true</transmitsPower>
                                </li>
                                <li Class="GestaltEngine.CompProperties_Upgradeable">
                                    <compClass>GestaltEngine.CompGestaltEngine</compClass>
                                    <upgrades>
                                        <li>
                                            <overlayGraphic>
                                                <texPath>Building/Various/transparent</texPath>
                                                <graphicClass>Graphic_Single</graphicClass>
                                                <color>(27,155,12)</color>
                                            </overlayGraphic>
                                            <powerConsumption>0</powerConsumption>
                                            <totalMechBandwidth>6000000</totalMechBandwidth>
                                            <totalControlGroups>60</totalControlGroups>
                                        </li>
                                    </upgrades>
                                </li>
                            </comps>
                        </ThingDef>
                    </value>
				</li>
            </operations>
	    </match>
    </Operation>
    
</Patch>