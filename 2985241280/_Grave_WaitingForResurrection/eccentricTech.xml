<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>Eccentric Tech - Core</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Recipes -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <RecipeDef ParentName="PGIRecipe_ConverterWorksiteBase">
                            <defName>Make_PGI_Eccentric_Nanoweave</defName>
                            <label>make nanoweave</label>
                            <products>
                                <Eccentric_Nanoweave>75</Eccentric_Nanoweave>
                            </products>
                        </RecipeDef>
                        <RecipeDef ParentName="PGIRecipe_ConverterWorksiteBase">
                            <defName>Make_PGI_Eccentric_HexCell</defName>
                            <label>make hex-cell</label>
                            <products>
                                <Eccentric_HexCell>50</Eccentric_HexCell>
                            </products>
                        </RecipeDef>
                    </value>
				</li>
            </operations>
	    </match>
    </Operation>

    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>Eccentric Tech - Fusion Power</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Recipes -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <RecipeDef ParentName="PGIRecipe_ConverterWorksiteBase">
                            <defName>Make_PGI_Eccentric_ReactorHullPlate</defName>
                            <label>make reactor hull plate</label>
                            <products>
                                <Eccentric_ReactorHullPlate>25</Eccentric_ReactorHullPlate>
                            </products>
                        </RecipeDef>
                        <RecipeDef ParentName="PGIRecipe_ConverterWorksiteBase">
                            <defName>Make_PGI_Eccentric_TFGM</defName>
                            <label>make TFG module</label>
                            <products>
                                <Eccentric_TFGM>1</Eccentric_TFGM>
                            </products>
                        </RecipeDef>
                    </value>
				</li>
            </operations>
	    </match>
    </Operation>
    
</Patch>