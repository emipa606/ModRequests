<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
	    <mods>
            <li>GardenCloche - Automatic Hydroponic</li>
	    </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Buildings -->
				<li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
						<ThingDef ParentName="PGI_PFurnitureBase">
							<defName>PGI_PGardenCloche</defName>
							<label>perfect cloche</label>
							<description>A cloche that can hold 2000 crops.</description>
                            <thingClass>GardenCloche.Cloche</thingClass>
							<size>(2,2)</size>
							<graphicData>
								<texPath>Building/Various/pgicloche</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>2</drawSize>
							</graphicData>
							<comps>
                                <li Class="CompProperties_Flickable"/>
                                <li Class="CompProperties_Power">
                                    <compClass>CompPowerTrader</compClass>
                                    <basePowerConsumption>0</basePowerConsumption>
                                    <transmitsPower>true</transmitsPower>
                                </li>
                                <li Class="GardenCloche.CompProperties_SelectCrop"></li>
                                <li Class="GardenCloche.CompProperties_UpgradeCloche">
                                    <basePower>0</basePower>
                                    <powerLimit>100000</powerLimit>
                                    <growthMin>100</growthMin>
                                    <growthMax>100000</growthMax>
                                    <yieldMin>100</yieldMin>
                                    <yieldMax>100000</yieldMax>
                                    <cropsInCloche>2000</cropsInCloche>
                                </li>
							</comps>
						</ThingDef>
                    </value>
				</li>
            </operations>
	    </match>
    </Operation>
    
</Patch>