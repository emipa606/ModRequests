<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_BM_PainKiller</defName>
        <label>brain bodule: pain killer</label>
        <description>An implanted perfect thing, make the implanter immune to pains.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <painFactor>0</painFactor>
	        </li>
        </stages>
    </HediffDef>
    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_BM_PainMaker</defName>
        <label>brain bodule: pain maker</label>
        <description>Create mind-shattering pain for implanters.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <painOffset>999999</painOffset>
                <painFactor>999999</painFactor>
	        </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_BM_PsychicImprove</defName>
        <label>brain bodule: psychic tuner</label>
        <description>An implanted perfectly generic item. Raise the implanter's psychic ability to an incredible level.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <statFactors>
                    <PsychicEntropyMax>1919810</PsychicEntropyMax>
                    <PsychicEntropyRecoveryRate>1919810</PsychicEntropyRecoveryRate>
                    <PsychicSensitivity>1919810</PsychicSensitivity>
                    <MeditationFocusGain>1919810</MeditationFocusGain>
                    <Ability_PsyfocusCost>0</Ability_PsyfocusCost>
                    <MeditationPlantGrowthOffset>1919810</MeditationPlantGrowthOffset>
                </statFactors>
                <statOffsets>
                    <PsychicSensitivity>1919810</PsychicSensitivity>
                    <MeditationFocusGain>1919810</MeditationFocusGain>
                </statOffsets>
	        </li>
        </stages>
    </HediffDef>
    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_BM_PsychicDecrease</defName>
        <label>brain bodule: psychic suppressor</label>
        <description>An implanted perfectly generic item. Close the door to psychic powers for implanters.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <statFactors>
                    <PsychicSensitivity>0</PsychicSensitivity>
                    <MeditationFocusGain>0</MeditationFocusGain>
                </statFactors>
                <statOffsets>
                    <PsychicSensitivity>-1919810</PsychicSensitivity>
                    <MeditationFocusGain>-1919810</MeditationFocusGain>
                </statOffsets>
	        </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_BM_MoodEraser</defName>
        <label>brain bodule: mood suppressor</label>
        <description>Shut down the implanter's mood and recreation needs. May cause unpredictable results.</description>
        <disablesNeeds>
            <li>Joy</li>
            <li>Mood</li>
        </disablesNeeds>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
            </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_BM_MentalBreaker</defName>
        <label>brain bodule: mental break</label>
        <description>Try this if you think your prisoners are too idle, but I hope you have idea of what you're doing.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>100000</socialFightChanceFactor>
                <mentalStateGivers>
                    <li>
                        <mentalState>Berserk</mentalState>
                        <mtbDays>0.01</mtbDays>
                    </li>
                    <li MayRequire="Ludeon.Rimworld.Ideology">
                        <mentalState>IdeoChange</mentalState>
                        <mtbDays>0.04</mtbDays>
                    </li>
                </mentalStateGivers>
	        </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="PGI_PImplantsBase">
        <defName>PGI_BM_TraumaSavant</defName>
        <label>brain bodule: trauma savant</label>
        <description>A brain module simulating the effect of trauma savant.</description>
        <stages>
            <li>
                <partIgnoreMissingHP>true</partIgnoreMissingHP>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <opinionOfOthersFactor>0</opinionOfOthersFactor>
                <capMods>
                    <li>
                        <capacity>Talking</capacity>
                        <setMax>0</setMax>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <setMax>0</setMax>
                    </li>
                </capMods>
	        </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_ReactOnDamage">
                <damageDefIncoming>EMP</damageDefIncoming>
                <createHediff>TraumaSavant</createHediff>
            </li>
        </comps>
    </HediffDef>

</Defs>
