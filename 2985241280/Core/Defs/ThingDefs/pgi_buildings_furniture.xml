    <ThingDef ParentName="PGI_PFurnitureBase">
        <defName>PGI_PerfectWallight</defName>
        <label>perfect wall light</label>
        <description>A wall light irradiating green hue.</description>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <passability>Standable</passability>
        <tickerType>Rare</tickerType>
        <size>(1,1)</size>
        <graphicData>
            <texPath>Building/Furniture/pgiwlight</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawOffsetNorth>(0,0,0.9)</drawOffsetNorth>
            <drawOffsetSouth>(0,0,-0.9)</drawOffsetSouth>
            <drawOffsetWest>(-0.9,0,0)</drawOffsetWest>
            <drawOffsetEast>(0.9,0,0)</drawOffsetEast>
        </graphicData>
        <uiIconPath>Building/Furniture/pgiwlighticon</uiIconPath>
        <rotatable>true</rotatable>
		<clearBuildingArea>false</clearBuildingArea>
        <overrideMinifiedRot>North</overrideMinifiedRot>
        <minifiedDrawOffset>(0, 0, 0.2)</minifiedDrawOffset>
        <canOverlapZones>true</canOverlapZones>
        <placeWorkers>
            <li>Placeworker_AttachedToWall</li>
        </placeWorkers>
		<building>
			<isEdifice>false</isEdifice>
            <isAttachment>true</isAttachment>
		</building>
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>24</glowRadius>
                <overlightRadius>24</overlightRadius>
                <glowColor>(36,120,36,0)</glowColor>
                <colorPickerEnabled>true</colorPickerEnabled>
                <darklightToggle>true</darklightToggle>
            </li>
            <li Class="CompProperties_Flickable"/>
        </comps>
    </ThingDef>
</Defs>