    <ThingDef ParentName="PGI_PFurnitureBase">
        <thingClass>Building_Storage</thingClass>
        <defName>PGI_PerfectShelf</defName>
        <label>perfect shelf</label>
        <description>A perfect shelf that can hold 2000 piles of items.</description>
        <graphicData>
            <texPath>Building/Various/pgishelf</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <statBases>
            <MarketValue>0</MarketValue>
        </statBases>
        <size>(1,1)</size>
        <inspectorTabs>
            <li>ITab_Storage</li>
        </inspectorTabs>
        <building>
            <isHopper>true</isHopper>
            <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
            <maxItemsInCell>2000</maxItemsInCell>
            <storageGroupTag>Hopper</storageGroupTag>
            <fixedStorageSettings>
                <filter>
                    <categories>
                        <li>Root</li>
                    </categories>
                    <specialFiltersToDisallow>
                        <li>AllowRotten</li>
                    </specialFiltersToDisallow>
                </filter>
            </fixedStorageSettings>
            <defaultStorageSettings>
                <priority>Preferred</priority>
            </defaultStorageSettings>
        </building>
    </ThingDef>

    <ThingDef ParentName="PGI_PFurnitureBase">
        <defName>PGI_PerfectEndtable</defName>
        <label>perfect end table</label>
        <description>A perfect end table. your pawns would like this.</description>
        <graphicData>
            <texPath>Building/Furniture/pgiendtable</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="CompProperties_Facility">
                <statOffsets>
                    <Comfort>114514</Comfort>
                    <MedicalTendQualityOffset>114514</MedicalTendQualityOffset>
                    <ImmunityGainSpeedFactor>114514</ImmunityGainSpeedFactor>
                    <SurgerySuccessChanceFactor>114514</SurgerySuccessChanceFactor>
                    <ResearchSpeedFactor>114514</ResearchSpeedFactor>
                    <WorkTableWorkSpeedFactor>114514</WorkTableWorkSpeedFactor>
                    <LearningRateFactor>1919810</LearningRateFactor>
                    <BiosculpterPodSpeedFactor>114514</BiosculpterPodSpeedFactor>
                </statOffsets>
                <maxSimultaneous>999</maxSimultaneous>
                <maxDistance>34.9</maxDistance>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="PGI_PFurnitureBase" Name="PGI_PBedBase">
        <thingClass>Building_Bed</thingClass>
        <defName>PGI_PerfectBed</defName>
        <label>perfect bed</label>
        <description>A perfect bed, except for its appeearance.</description>
        <uiIconScale>0.90</uiIconScale>
        <drawGUIOverlay>true</drawGUIOverlay>
        <graphicData>
            <texPath>Building/Furniture/pgibed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(1.8,2)</drawSize>
        </graphicData>
        <rotatable>true</rotatable>
        <statBases>
            <BedRestEffectiveness>114514</BedRestEffectiveness>
            <Comfort>114514</Comfort>
            <ImmunityGainSpeedFactor>114514</ImmunityGainSpeedFactor>
            <SurgerySuccessChanceFactor>114514</SurgerySuccessChanceFactor>
            <BirthRitualQualityOffset MayRequire="Ludeon.RimWorld.Biotech">114514</BirthRitualQualityOffset>
        </statBases>
        <size>(1,2)</size>
        <building>
            <bed_showSleeperBody>False</bed_showSleeperBody>
            <bed_healPerDay>1919810</bed_healPerDay>
            <isSittable>true</isSittable>
            <multiSittable>true</multiSittable>
            <sitIgnoreOrientation>true</sitIgnoreOrientation>
            <bed_crib MayRequire="Ludeon.RimWorld.Biotech">true</bed_crib>
            <buildingTags>
                <li>Bed</li>
            </buildingTags>
        </building>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="CompProperties_AssignableToPawn">
                <drawAssignmentOverlay>false</drawAssignmentOverlay>
                <compClass>CompAssignableToPawn_Bed</compClass>
            </li>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>PGI_PerfectEndtable</li>
                </linkableFacilities>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="PGI_PBedBase">
        <defName>PGI_PerfectBedDouble</defName>
        <label>perfect double bed</label>
        <description>A perfect double bed, except for its appeearance.</description>
        <graphicData>
            <texPath>Building/Furniture/pgibeddouble</texPath>
        </graphicData>
        <size>(2,2)</size>
    </ThingDef>
    <ThingDef ParentName="PGI_PBedBase">
        <defName>PGI_PerfectAnimalBed</defName>
        <label>perfect animal bed</label>
        <description>A perfect animal bed, except for its appeearance.</description>
        <graphicData>
            <texPath>Building/Furniture/pgianimalbed</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.9</drawSize>
        </graphicData>
        <size>(1,1)</size>
        <building>
            <bed_humanlike>false</bed_humanlike>
            <bed_showSleeperBody>True</bed_showSleeperBody>
        </building>
    </ThingDef>

    <ThingDef ParentName="PGI_PFurnitureBase">
        <defName>PGI_PerfectStool</defName>
        <label>perfect stool</label>
        <description>A perfect stool. Maybe somehow too perfect.</description>
        <graphicData>
            <texPath>Building/Atlas/pgistool_Atlas</texPath>
            <graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom2</li>
			</linkFlags>
        </graphicData>
		<uiIconPath>Building/Atlas/pgistoolicon</uiIconPath>
        <socialPropernessMatters>true</socialPropernessMatters>
        <building>
            <isSittable>true</isSittable>
            <sitIgnoreOrientation>true</sitIgnoreOrientation>
            <relatedBuildCommands>
                <li>PGI_PerfectTable</li>
            </relatedBuildCommands>
        </building>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="PGI_PFurnitureBase">
        <defName>PGI_PerfectTable</defName>
        <label>perfect table</label>
        <description>A petite perfect table.</description>
        <graphicData>
            <texPath>Building/Atlas/pgitable_Atlas</texPath>
