<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PGI_PFurnitureBase">
        <thingClass>Building_Heater</thingClass>
        <defName>PGI_PerfectHeater</defName>
        <label>perfect heater</label>
        <description>A perfect heater. Also a lamp.</description>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <passability>Standable</passability>
        <tickerType>Rare</tickerType>
        <size>(1,1)</size>
        <graphicData>
            <texPath>Building/Various/pgiheater</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(0.8,0.8)</drawSize>
        </graphicData>
		<clearBuildingArea>false</clearBuildingArea>
        <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
        <placeWorkers>
            <li>PlaceWorker_Heater</li>
        </placeWorkers>
		<building>
			<isEdifice>false</isEdifice>
		</building>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>0</basePowerConsumption>
                <shortCircuitInRain>false</shortCircuitInRain>
                <transmitsPower>true</transmitsPower>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>35</glowRadius>
                <overlightRadius>35</overlightRadius>
                <glowColor>(255,255,255,0)</glowColor>
                <colorPickerEnabled>true</colorPickerEnabled>
                <darklightToggle>true</darklightToggle>
            </li>
            <li Class="CompProperties_TempControl">
                <energyPerSecond>6000000000</energyPerSecond>
            </li>
            <li Class="CompProperties_Flickable"/>
        </comps>
    </ThingDef>
