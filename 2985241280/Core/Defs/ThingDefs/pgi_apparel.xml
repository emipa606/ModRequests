<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PGI_PApparelBase">
        <defName>PGI_PerfectHelm</defName>
        <label>perfect helm</label>
        <description>Pure pefection.</description>
        <graphicData>
            <texPath>Misc/perfecthead</texPath>
        </graphicData>
        <costList>
            <PGI_PerfectlyGenericItem>10</PGI_PerfectlyGenericItem>
        </costList>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
                <li>Neck</li>
            </bodyPartGroups>
            <wornGraphicPath>Misc/perfecthead/perfecthead</wornGraphicPath>
            <layers>
                <li>Overhead</li>
                <li>EyeCover</li>
            </layers>
        </apparel>        
    </ThingDef>
    <ThingDef ParentName="PGI_PApparelBase">
		<defName>PGI_PerfectArmor</defName>
		<label>perfect armor</label>
		<description>A perfect armor.</description>
		<graphicData>
			<texPath>Misc/perfectbody</texPath>
		</graphicData>
        <costList>
            <PGI_PerfectlyGenericItem>20</PGI_PerfectlyGenericItem>
        </costList>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
            </bodyPartGroups>
            <wornGraphicPath>Misc/perfectbody/perfectbody</wornGraphicPath>
            <layers>
                <li>Shell</li>
            </layers>
        </apparel>
    </ThingDef>
    
    <ThingDef ParentName="PGI_PUtilityBase">
        <defName>PGI_PerfectAmulet</defName>
        <label>perfect amulet</label>
        <description>Just an amulet.</description>
    </ThingDef>

    <ThingDef ParentName="PGI_PUtilityBase">
        <defName>PGI_PerfectBrainLance</defName>
        <label>perfect brain lance</label>
        <description>A shock lance with 100% chance to cause brain damage.</description>
        <verbs>
            <li>
                <verbClass>Verb_CastTargetEffectLances</verbClass>
                <label>shock</label>
                <hasStandardCommand>true</hasStandardCommand>
                <targetable>true</targetable>
                <onlyManualCast>True</onlyManualCast>
                <requireLineOfSight>false</requireLineOfSight>
                <range>99.9</range>
                <warmupTime>0</warmupTime>
                <targetParams>
                    <canTargetBuildings>false</canTargetBuildings>
                    <onlyTargetPsychicSensitive>false</onlyTargetPsychicSensitive>
                    <neverTargetIncapacitated>false</neverTargetIncapacitated>
                </targetParams>
                <soundCast>PsychicShockLanceCast</soundCast>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_ApparelReloadable">
                <maxCharges>200</maxCharges>
                <ammoDef>PGI_PerfectlyGenericItem</ammoDef>
                <ammoCountPerCharge>1</ammoCountPerCharge>
                <baseReloadTicks>1</baseReloadTicks>
                <soundReload>Standard_Reload</soundReload>
                <hotKey>Misc4</hotKey>
                <chargeNoun>charge</chargeNoun>
                <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
            </li>
            <li>
                <compClass>CompTargetEffect_PsychicShock</compClass>
            </li>
            <li Class="CompProperties_TargetEffect_BrainDamageChance">
                <brainDamageChance>1</brainDamageChance>
            </li>
            <li Class="CompProperties_TargetEffect_FleckOnTarget">
                <fleckDef>PsycastPsychicEffect</fleckDef>
            </li>
            <li Class="CompProperties_TargetEffect_FleckConnecting">
                <fleckDef>PsycastPsychicLine</fleckDef>
            </li>
        </comps>
    </ThingDef>
</Defs>