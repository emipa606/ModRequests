<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PGI_MeleeWeaponsBase">
        <defName>PGI_PerfectSword</defName>
        <label>perfect sword</label>
        <description>This is a very perfect sword, in terms of power</description>
        <graphicData>
            <texPath>Misc/perfectsword</texPath>
        </graphicData>
        <tools>
            <li>
                <label>edge</label>
                <capacities>
                    <li>PGI_PDamage</li>
                </capacities>
                <power>114514</power>
                <cooldownTime>0</cooldownTime>
                <armorPenetration>114514</armorPenetration>
            </li>
        </tools>
	    <costList>
	        <PGI_PerfectlyGenericItem>10</PGI_PerfectlyGenericItem>
	    </costList>
    </ThingDef>

    <ThingDef ParentName="PGI_RangedWeaponsBase">
        <defName>PGI_PerfectBow</defName>
        <label>perfect bow</label>
        <description>This is a very perfect bow, in terms of power</description>
        <graphicData>
            <texPath>Misc/perfectbow</texPath>
        </graphicData>
        <costList>
	        <PGI_PerfectlyGenericItem>10</PGI_PerfectlyGenericItem>
	    </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>PGI_ArrowPerfectArrow</defaultProjectile>
                <warmupTime>0</warmupTime>
                <range>99.9</range>
                <soundCast>Interact_BeatFire</soundCast>
                <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
                <canGoWild>false</canGoWild>
            </li>
        </verbs>
        <tools>
            <li>
                <label>pike</label>
                <capacities>
                    <li>PGI_PDamage</li>
                </capacities>
                <power>114514</power>
                <cooldownTime>0</cooldownTime>
                <armorPenetration>114514</armorPenetration>
            </li>
        </tools>
    </ThingDef>
    <ThingDef ParentName="PGI_PBulletBase">
        <defName>PGI_ArrowPerfectArrow</defName>
        <label>perfect arrow</label>
        <graphicData>
            <texPath>Item/projs/pgiarrow</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <projectile>
            <damageDef>PGI_PDamage</damageDef>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="PGI_RangedWeaponsBase">
        <defName>PGI_PerfectJoyLauncher</defName>
        <label>perfect joy launcher</label>
        <description>This is the start of joy.\n\n Note:This weapon is overpowered and can clean up everything in a large area, including your pawns. So take care when using this weapon. Pawns whose incoming damage multiplier is NOT 0 are better kept at safe place.</description>
        <graphicData>
            <texPath>Misc/perfectjoylauncher</texPath>
            <drawSize>1.8</drawSize>
        </graphicData>
        <costList>
	        <PGI_PerfectlyGenericItem>50</PGI_PerfectlyGenericItem>
	    </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_PGI_PerfectlyGenericShell</defaultProjectile>
                <forcedMissRadius>9.9</forcedMissRadius>
                <warmupTime>0</warmupTime>
                <range>99.9</range>
                <soundCast>Interact_BeatFire</soundCast>
                <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
                <canGoWild>false</canGoWild>
                <requireLineOfSight>false</requireLineOfSight>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                    <canTargetBuildings>true</canTargetBuildings>
                    <canTargetAnimals>true</canTargetAnimals>
                    <canTargetMechs>true</canTargetMechs>
                </targetParams>
            </li>
        </verbs>
        <tools>
            <li>
                <label>Head</label>
                <capacities>
                    <li>PGI_PDamage</li>
                </capacities>
                <power>1919810</power>
                <cooldownTime>0</cooldownTime>
                <armorPenetration>1919810</armorPenetration>
            </li>
        </tools>
    </ThingDef>
</Defs>