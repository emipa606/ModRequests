    <ThingDef ParentName="PGI_PSecurityBase">
        <defName>PGI_PerfectMortar</defName>
        <label>perfect mortar</label>
        <description>A powerful mortar made of perfectly generic items.</description>
        <graphicData>
            <texPath>Building/Turret/perfectmortarbase</texPath>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <uiIconPath>Building/Turret/perfectmortaricon</uiIconPath>
        <uiIconScale>0.9</uiIconScale>
        <size>(2,2)</size>
        <inspectorTabs>
            <li>ITab_Shells</li>
        </inspectorTabs>
        <building>
            <turretGunDef>Gun_PGI_PerfectMortar</turretGunDef>
            <turretBurstWarmupTime>0</turretBurstWarmupTime>
            <turretBurstCooldownTime>0</turretBurstCooldownTime>
            <turretTopOffset>(0,0)</turretTopOffset>
            <turretTopDrawSize>2.2</turretTopDrawSize>
        </building>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_Mannable">
                <manWorkType/>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="PGI_PTurrentWeaponBase">
        <defName>Gun_PGI_PerfectMortar</defName>
        <label>perfect mortar</label>
        <description>perfect mortar.</description>
        <recoilPower>3</recoilPower>
        <graphicData>
            <texPath>Building/Turret/perfectmortartop</texPath>
        </graphicData>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
                <warmupTime>0</warmupTime>
                <forcedMissRadius>0.1</forcedMissRadius>
                <isMortar>true</isMortar>
                <requireLineOfSight>false</requireLineOfSight>
                <minRange>14.9</minRange>
                <burstShotCount>1</burstShotCount>
                <range>500</range>
                <soundCast>Mortar_LaunchA</soundCast>
                <muzzleFlashScale>16</muzzleFlashScale>
                <consumeFuelPerShot>0</consumeFuelPerShot>
                <canGoWild>false</canGoWild>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                    <canTargetBuildings>true</canTargetBuildings>
                    <canTargetAnimals>true</canTargetAnimals>
                    <canTargetMechs>true</canTargetMechs>
                </targetParams>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_ChangeableProjectile" />
        </comps>
        <building>
            <fixedStorageSettings>
                <filter>
                    <categories>
                        <li>MortarShells</li>
                        <li>PGI_TCMisc_Shells</li>
                    </categories>
                </filter>
            </fixedStorageSettings>
        </building>
    </ThingDef>
    
