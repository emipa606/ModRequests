<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PGI_PBuildingsBase">
        <defName>PGI_PerfectPowerConduit</defName>
        <label>perfect conduit</label>
        <description>Power conduit made from perfect material.</description>
        <thingClass>Building</thingClass>
        <category>Building</category>
        <altitudeLayer>Conduits</altitudeLayer>
        <graphicData>
            <texPath>Building/Atlas/invisi</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <linkType>Transmitter</linkType>
            <linkFlags>
                <li>PowerConduit</li>
            </linkFlags>
        </graphicData>
        <uiIconPath>Building/Atlas/pgiwire</uiIconPath>
        <uiIconScale>0.7</uiIconScale>
        <fillPercent>0</fillPercent>
		<holdsRoof>false</holdsRoof>
        <coversFloor>false</coversFloor>
        <building>
            <isEdifice>false</isEdifice>
            <blueprintGraphicData>
                <texPath>Things/Building/Linked/PowerConduit_Blueprint_Atlas</texPath>
            </blueprintGraphicData>
        </building>
        <passability>Standable</passability>
        <clearBuildingArea>false</clearBuildingArea>
        <costList/>
        <placeWorkers>
            <li>PlaceWorker_Conduit</li>
        </placeWorkers>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTransmitter</compClass>
                <transmitsPower>true</transmitsPower>
            </li>
        </comps>
    </ThingDef>
    
    <ThingDef ParentName="PGI_PFurnitureBase">
        <defName>PGI_PerfectPowerNexus</defName>
        <label>perfect power nexus</label>
        <description>A perfect power nexus! The ultimate solution to energy problems.</description>
        <graphicData>
            <texPath>Building/Various/pgigenerator</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <size>(1,1)</size>
        <inspectorTabs>
            <li>ITab_ContentsTransporter</li>
        </inspectorTabs>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerPlant</compClass>
                <basePowerConsumption>-6000000000</basePowerConsumption>
                <transmitsPower>true</transmitsPower>
            </li>
            <li Class="CompProperties_Transporter">
                <restEffectiveness>114514</restEffectiveness>
                <massCapacity>6000000000</massCapacity>
                <canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
                <showOverallStats>false</showOverallStats>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="PGI_PFurnitureBase">
        <defName>PGI_PerfectPod</defName>
        <label>perfect pod</label>
        <description>A specially designed pod for massive local storage.</description>
        <graphicData>
            <texPath>Building/Various/pgipod</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <size>(1,1)</size>
        <inspectorTabs>
            <li>ITab_ContentsTransporter</li>
        </inspectorTabs>
        <comps>
            <li Class="CompProperties_Transporter">
                <restEffectiveness>114514</restEffectiveness>
                <massCapacity>6000000000</massCapacity>
                <canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
                <showOverallStats>false</showOverallStats>
            </li>
            <li Class="CompProperties_Battery">
                <storedEnergyMax>6000000000</storedEnergyMax>
                <efficiency>1</efficiency>
                <shortCircuitInRain>false</shortCircuitInRain>
                <transmitsPower>true</transmitsPower>
            </li>
        </comps>
    </ThingDef>
</Defs>