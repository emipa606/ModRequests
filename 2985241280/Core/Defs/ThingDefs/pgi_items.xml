<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PGI_PResourceBase">
        <defName>PGI_PerfectlyGenericItem</defName>
        <label>perfectly generic item</label>
        <description>This is a perfectly generic item. Perhaps a little too perfect.</description>
        <graphicData>
            <texPath>Item/pgiitem</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <drawSize>0.6</drawSize>
        </graphicData>
    </ThingDef>
    <ThingDef ParentName="PGI_PResourceBase">
        <thingClass>Medicine</thingClass>
        <defName>PGI_PerfectMedikit</defName>
        <label>perfect medikit</label>
        <description>A medical kit made from perfectly generic items.</description>
        <graphicData>
            <texPath>Item/pgimed</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <drawSize>0.6</drawSize>
        </graphicData>
        <statBases>
            <MarketValue>25</MarketValue>
            <MedicalPotency>1919810</MedicalPotency>
            <MedicalQualityMax>9999999</MedicalQualityMax>
        </statBases>
        <thingCategories>
            <li>Medicine</li>
        </thingCategories>
        <comps>
            <li Class="CompProperties_Usable">
                <useJob>UseItem</useJob>
                <useLabel>Use {0_label}</useLabel>
                <useDuration>0</useDuration>
            </li>
            <li Class="CompProperties_UseEffect">
                <compClass>CompUseEffect_FixWorstHealthCondition</compClass>
            </li>
            <li Class="CompProperties_UseEffectPlaySound">
                <soundOnUsed>MechSerumUsed</soundOnUsed>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="PGI_PMealsBase">
        <defName>PGI_PerfectMeal</defName>
        <label>perfect meal</label>
        <description>A pack of food made from green cubes. Surprisingly delicious and nutritious.</description>
        <graphicData>
            <texPath>Item/pgimeal</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <drawSize>0.8</drawSize>
        </graphicData>
        <thingCategories>
            <li>FoodMeals</li>
        </thingCategories>
        <statBases>
            <MarketValue>5</MarketValue>
        </statBases>
    </ThingDef>
    <ThingDef ParentName="PGI_PDrugsBase">
        <defName>PGI_PerfectYayo</defName>
        <label>perfect yayo</label>
        <description>It should be safe to use and guarantee your pawns infinite joy.</description>
        <graphicData>
            <texPath>Item/pgiyayo</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <drawSize>0.4</drawSize>
        </graphicData>
        <ingestible>
            <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
            <defaultNumToIngestAtOnce>1</defaultNumToIngestAtOnce>
        </ingestible>
    </ThingDef>

    <ThingDef ParentName="PGI_BaseShellsBase">
        <defName>PGI_PerfectlyGenericShell</defName>
        <label>perfectly generic shell</label>
        <description>Super powerful... maybe a little too powerful.</description>
        <graphicData>
            <texPath>Item/pshell</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <projectileWhenLoaded>Bullet_PGI_PerfectlyGenericShell</projectileWhenLoaded>
    </ThingDef>
    <ThingDef ParentName="PGI_PBulletBase">
        <thingClass>Projectile_Explosive</thingClass>
        <defName>Bullet_PGI_PerfectlyGenericShell</defName>
        <label>perfectly generic shell</label>
        <graphicData>
            <texPath>Item/projs/pgishell</texPath>
            <color>(36,120,36)</color>
        </graphicData>
        <projectile>
            <damageDef>PGI_PDamage</damageDef>
            <explosionRadius>36.9</explosionRadius>
            <flyOverhead>true</flyOverhead>
        </projectile>
    </ThingDef>
    
    <ThingDef ParentName="PGI_BaseShellsBase">
        <defName>PGI_PerfectlyMiniShell</defName>
        <label>perfectly mini shell</label>
        <description>Small range but fast, and still powerful.</description>
        <graphicData>
            <texPath>Item/pbullet</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <projectileWhenLoaded>Bullet_PGI_PerfectlyMiniShell</projectileWhenLoaded>
    </ThingDef>
    <ThingDef ParentName="PGI_PBulletBase">
        <thingClass>Projectile_Explosive</thingClass>
        <defName>Bullet_PGI_PerfectlyMiniShell</defName>
        <label>perfectly mini shell</label>
        <graphicData>
            <texPath>Item/projs/pgibullet</texPath>
            <color>(36,120,36)</color>
        </graphicData>
        <projectile>
            <damageDef>PGI_PDamage</damageDef>
            <explosionRadius>6.9</explosionRadius>
            <flyOverhead>true</flyOverhead>
        </projectile>
    </ThingDef>
</Defs>