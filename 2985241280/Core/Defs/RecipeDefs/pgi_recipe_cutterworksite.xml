<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RecipeDef ParentName="PGI_PRecipeBase">
        <defName>PGI_CutterWorksiteButcherRecipe</defName>
        <label>butchering</label>
        <description>Butcher a corpse, whether its made of flesh or metal.</description>
        <specialProducts>
            <li>Butchery</li>
        </specialProducts>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Corpses</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Corpses</li>
            </categories>
        </fixedIngredientFilter>
    </RecipeDef>

    <RecipeDef ParentName="PGI_PRecipeBase">
        <defName>PGI_CutterWorksiteRecycleRecipe</defName>
        <label>smelting</label>
        <description>Cut useless weapons and apparel into pieces and try to retrieve useful resources.</description>
        <specialProducts>
            <li>Smelted</li>
        </specialProducts>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Weapons</li>
                        <li>Apparel</li>
						<li>MortarShells</li>
						<li>BodyPartsProsthetic</li>
						<li>BodyPartsBionic</li>
						<li>BodyPartsUltra</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Weapons</li>
                <li>Apparel</li>
                <li>MortarShells</li>
                <li>BodyPartsProsthetic</li>
                <li>BodyPartsBionic</li>
                <li>BodyPartsUltra</li>
            </categories>
        </fixedIngredientFilter>
    </RecipeDef>

</Defs>