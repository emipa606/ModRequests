<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/HediffDef[defName="MindNumbSerum"]/stages</xpath>
        <value>
            <stages>
                <li>
                    <blocksMentalBreaks>true</blocksMentalBreaks>
                    <blocksInspirations>true</blocksInspirations>
                    <pctAllThoughtNullification>1</pctAllThoughtNullification>
                    <overrideMoodBase>1</overrideMoodBase>
                </li>
            </stages>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/HediffDef[defName="MindNumbSerum"]/comps/li[@Class="HediffCompProperties_DisappearsDisableable"]</xpath>
        <value>
            <li Class="HediffCompProperties_DisappearsDisableable">
                <disappearsAfterTicks>600000</disappearsAfterTicks>
                <showRemainingTime>true</showRemainingTime>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Electroharvester" or defName="ElectricInhibitor" or defName="BioferriteHarvester" or defName="BioferriteGenerator"]/statBases/Flammability</xpath>
        <value>
            <Flammability>0</Flammability>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="ShardInhibitor"]/statBases</xpath>
        <value>
            <Flammability>0</Flammability>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Electroharvester" or defName="ElectricInhibitor" or defName="ShardInhibitor" or defName="BioferriteHarvester" or defName="BioferriteGenerator" or defName="ShardBeacon"]</xpath>
        <value>
            <useHitPoints>false</useHitPoints>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BioferriteGenerator"]/comps/li[@Class="CompProperties_Power"]/basePowerConsumption</xpath>
        <value>
            <basePowerConsumption>-5000</basePowerConsumption>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Electroharvester"]/comps/li[@Class="CompProperties_Power"]/basePowerConsumption</xpath>
        <value>
            <basePowerConsumption>-5000</basePowerConsumption>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Electroharvester"]/comps/li[@Class="CompProperties_Facility"]</xpath>
        <value>
            <li Class="CompProperties_Facility">
                <compClass>CompFacilityInactiveWhenElectricityDisabled</compClass>
                <maxSimultaneous>4</maxSimultaneous>
                <maxDistance>15</maxDistance>
                <statOffsets>
                    <ContainmentStrength>25</ContainmentStrength>
                </statOffsets>
            </li>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BioferriteHarvester"]/comps/li[@Class="CompProperties_Facility"]</xpath>
        <value>
            <li Class="CompProperties_Facility">
                <maxSimultaneous>4</maxSimultaneous>
                <maxDistance>15</maxDistance>
                <statOffsets>
                    <ContainmentStrength>15</ContainmentStrength>
                </statOffsets>
            </li>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ShardInhibitor"]/comps/li[@Class="CompProperties_Facility"]</xpath>
        <value>
            <li Class="CompProperties_Facility">
                <maxSimultaneous>4</maxSimultaneous>
                <maxDistance>15</maxDistance>
                <requiresLOS>false</requiresLOS>
                <statOffsets>
                    <ContainmentStrength>20</ContainmentStrength>
                </statOffsets>
            </li>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ShardBeacon"]/comps/li[@Class="CompProperties_Facility"]</xpath>
        <value>
            <li Class="CompProperties_Facility">
                <maxSimultaneous>12</maxSimultaneous>
                <maxDistance>12</maxDistance>
                <requiresLOS>false</requiresLOS>
                <statOffsets>
                    <PsychicRitualQuality>0.25</PsychicRitualQuality>
                </statOffsets>
            </li>
        </value>
    </Operation>
    
</Patch>