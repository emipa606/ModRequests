<?xml version="1.0" encoding="utf-8"?>

<Defs>

	<ThingDef ParentName="ApparelBase">
		<defName>Apparel_IbieshanCrown</defName>
		<label>crown</label>
		<description>A crown of metal with an elaborate design. Made specifically for an Ibie'shan Kig-Yar</description>
		<smeltable>true</smeltable>
		<thingCategories>
			<li>HeadgearNoble</li>
		</thingCategories>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<categories>
					<li>Root</li>
				</categories>
				<disallowedThingDefs>
					<li>Jade</li>
					<li>Uranium</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
			<researchPrerequisite>RoyalApparel</researchPrerequisite>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/KigYar/Apparel/Crown/IbieshanCrown</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.9, 0.9)</drawSize>
		</graphicData>
		<costStuffCount>75</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
			<!-- Stuff like jade here maybe? -->
		</stuffCategories>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>12000</WorkToMake>
			<Mass>0.9</Mass>
			<EquipDelay>0.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>0.2</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/KigYar/Apparel/Crown/IbieshanCrown</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Royal</li>
				<li>RoyalTier6</li>
			</tags>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

