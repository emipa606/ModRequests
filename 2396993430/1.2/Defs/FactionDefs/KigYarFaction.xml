		<settlementTexturePath>World/KigYarBase</settlementTexturePath>

		<canSiege>true</canSiege>
		<canMakeRandomly>true</canMakeRandomly>
		<canStageAttacks>true</canStageAttacks>

		<factionNameMaker>NamerFactionKigYarVillage</factionNameMaker>
		<settlementNameMaker>NamerBaseKigYarVillage</settlementNameMaker>
		<techLevel>Spacer</techLevel>

		<backstoryFilters>
			<li>
				<categories>
					<li>KigYarBackstory</li>
				</categories>
			</li>
		</backstoryFilters>

		<hairTags>
			<li>Rural</li>
			<li>Tribal</li>
			<li>Empty</li>
		</hairTags>

		<startingGoodwill>
			<min>-10</min>
			<max>-5</max>
		</startingGoodwill>
		<naturalColonyGoodwill>
			<min>-5</min>
			<max>10</max>
		</naturalColonyGoodwill>

