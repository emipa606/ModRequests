<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<FactionDef>
		<defName>KigYarFaction</defName>
		<label>kig yar</label>
		<description>A Kig Yar settlement.</description>
		<pawnsPlural>Kig-Yar</pawnsPlural>
		<basicMemberKind>KigYar</basicMemberKind>

		<settlementGenerationWeight>.3</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>

