			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>Caravan_Outlander_PirateMerchant</li>
		</caravanTraderKinds>
		<baseTraderKinds>
			<li>Base_Outlander_Standard</li>
		</baseTraderKinds>

		<colorSpectrum>
			<li>(150, 40, 0)</li>
			<li>(200, 150, 0)</li>
			<li>(100, 100, 50)</li>
		</colorSpectrum>

		<mustStartOneEnemy>false</mustStartOneEnemy>
		<leaderTitle>Matriarch</leaderTitle>
		<leaderForceGenerateNewPawn>true</leaderForceGenerateNewPawn>

		<allowedArrivalTemperatureRange>
			<min>0</min>
			<max>45</max>
		</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(800, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<KigYarColonist>20</KigYarColonist>
					<TvaoanColonist>3</TvaoanColonist>
					<KigYarGuard>10</KigYarGuard>
					<KigYarMercenary>5</KigYarMercenary>
					<TvaoanSoldier>1</TvaoanSoldier>
				</options>
			</li>
			<li>
				<kindDef>Combat</kindDef>
				<options>
					<KigYarColonist>30</KigYarColonist>
					<KigYarGuard>40</KigYarGuard>
					<KigYarSoldier>140</KigYarSoldier>
