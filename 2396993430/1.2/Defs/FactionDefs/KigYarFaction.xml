					<KigYarTrader>1</KigYarTrader>
				</traders>
				<carriers>
					<Muffalo>1</Muffalo>
					<Alpaca>2</Alpaca>
					<Dromedary>2</Dromedary>
				</carriers>
				<guards>
					<KigYarColonist>30</KigYarColonist>
					<KigYarSoldier>120</KigYarSoldier>
					<KigYarGuard>40</KigYarGuard>
