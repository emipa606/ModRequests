<?xml version="1.0" encoding="utf-8"?>

<Defs>
	
	<!--Jackals-->
	<PawnKindDef Abstract="True" Name="BaseKigYarPawnKind">
		<race>Alien_KigYar</race>
		<combatPower>40</combatPower>
		<baseRecruitDifficulty>0.50</baseRecruitDifficulty>
		<isFighter>false</isFighter>
		<apparelIgnoreSeasons>false</apparelIgnoreSeasons>
		<forceNormalGearQuality>true</forceNormalGearQuality>
	</PawnKindDef>

	<PawnKindDef ParentName="BaseKigYarPawnKind">
		<defName>KigYar</defName>
		<label>kig-yar</label>
		<defaultFactionType>PlayerColony</defaultFactionType>

		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>KigYarBackstory</li>
				</categories>
			</li>
		</backstoryFiltersOverride>

		<apparelTags>
			<li>Neolithic</li>
			<li>Industrial</li>
		</apparelTags>

		<apparelMoney>
			<min>100</min>
			<max>400</max>
		</apparelMoney>

		<backstoryCryptosleepCommonality>0.1</backstoryCryptosleepCommonality>
	</PawnKindDef>

	
