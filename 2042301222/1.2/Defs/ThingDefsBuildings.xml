<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef>
		<defName>RBB_Bridge</defName>
		<label>Basic Bridge</label>
		<description>A basic wooden pier-style bridge. Useful for crossing rivers without getting your feet wet. Can be built over shallow water, marsh or mud.</description>
		<category>Building</category>
		<thingClass>RBB_Code.Building_Bridge</thingClass>
		<graphicData>
			<texPath>Bridge_Atlas_Planks</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags><li>Custom8</li></linkFlags>
		</graphicData>
		<uiIconPath>Bridge_Icon</uiIconPath>
		<size>(1,1)</size>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<soundImpactDefault>BulletImpact_Wood</soundImpactDefault>
		<drawerType>MapMeshAndRealTime</drawerType>
		<repairEffect>Repair</repairEffect>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<altitudeLayer>Floor</altitudeLayer>
		<passability>Standable</passability>
		<blockWind>false</blockWind>
		<placingDraggableDimensions>2</placingDraggableDimensions>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<holdsRoof>false</holdsRoof>
		<designationCategory>Structure</designationCategory>
		<tickerType>Never</tickerType>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<WorkToBuild>300</WorkToBuild>
			<Mass>50</Mass>
			<Flammability>0.0</Flammability>
			<Beauty>1</Beauty>
		</statBases> 
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>10</costStuffCount>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>2</multiplier>
			</li>
		</damageMultipliers>
		<castEdgeShadows>False</castEdgeShadows>
		<terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
		<pathCost>2</pathCost>
		<placeWorkers>
			<li>RBB_Code.PlaceWorker_BasicBridge</li>
		</placeWorkers>
		<building>
			<isEdifice>false</isEdifice>
		</building>
	</ThingDef>
	
