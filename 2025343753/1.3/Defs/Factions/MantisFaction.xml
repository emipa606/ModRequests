<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef ParentName="FactionBase">
		<defName>MantisFaction</defName>
		<!-- TribeMantis-->
		<label>razor-sharp swarm</label>
		<description>Organized group of bloodthirsty mantiss</description>
		<pawnsPlural>deadly mantiss</pawnsPlural>

		<settlementGenerationWeight>.55</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>

		<settlementTexturePath>Mantis/npcZoom</settlementTexturePath>
		<factionIconPath>Mantis/npc</factionIconPath>

		<canSiege>true</canSiege>
		<canMakeRandomly>true</canMakeRandomly>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(40, 3)</li>
				<li>(500, 1)</li>
			</points>
		</raidCommonalityFromPointsCurve>
		<canStageAttacks>true</canStageAttacks>

		<factionNameMaker>NamerFactionMantisVillage</factionNameMaker>
		<settlementNameMaker>NamerBaseMantisVillage</settlementNameMaker>
		<techLevel>Industrial</techLevel>
		<!--<backstoryCategory>MantisBackstory</backstoryCategory>		-->

		<backstoryFilters>
			<li>
				<categories>
					<li>Raider</li>
					<li>MantisBackstory</li>
				</categories>
			</li>
		</backstoryFilters>

		<allowedCultures>
			<li>Corunan</li>
		</allowedCultures>

		<visitorTraderKinds>
			<li>Visitor_Neolithic_Standard</li>
		</visitorTraderKinds>
		<caravanTraderKinds>
			<li>Caravan_Neolithic_BulkGoods</li>
			<li>Caravan_Neolithic_WarMerchant</li>
			<li>Caravan_Neolithic_Slaver</li>
		</caravanTraderKinds>
		<baseTraderKinds>
			<li>Base_Neolithic_Standard</li>
		</baseTraderKinds>

		<colorSpectrum>
			<!--
			<li>(204, 255, 51)</li>
			<li>(51, 153, 51)</li>
			-->

			<!-- green -->
			<li>(50, 250, 70)</li>
			<li>(0, 180, 0)</li>
			<!-- red -->
			<li>(190, 0, 40)</li>
		</colorSpectrum>

		<mustStartOneEnemy>true</mustStartOneEnemy>
		<leaderTitle>Mandragonfly</leaderTitle>

		<allowedArrivalTemperatureRange>
			<min>-15</min>
			<max>50</max>
		</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(800, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>	
		<pawnGroupMakers>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<MantisColonist>20</MantisColonist>
					<MantisGuard>10</MantisGuard>
					<MantisFighter>2</MantisFighter>
					<LTF_Mantis_Addicted>1</LTF_Mantis_Addicted>
				</options>
			</li>
			<li>
				<kindDef>Combat</kindDef>
				<options>
					<MantisColonist>50</MantisColonist>
					<MantisGuard>90</MantisGuard>
					<MantisGrenadier>50</MantisGrenadier>
					<MantisFighter>60</MantisFighter>
					<MantisHunter>80</MantisHunter>
					<MantisHistGuard>40</MantisHistGuard>
					<MantisShadowscale>10</MantisShadowscale>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<MantisTrader>1</MantisTrader>
				</traders>
				<carriers>
					<Muffalo>1</Muffalo>
					<!-- <Dromedary>2</Dromedary> -->
					<!-- packanimal -->
					<Megaspider>2</Megaspider>
				</carriers>
				<guards>
					<MantisColonist>50</MantisColonist>
					<MantisGrenadier>20</MantisGrenadier>
					<MantisGuard>50</MantisGuard>
					<MantisFighter>100</MantisFighter>
					<MantisHunter>50</MantisHunter>
					<MantisHistGuard>15</MantisHistGuard>
					<LTF_Mantis_Addicted>5</LTF_Mantis_Addicted>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<MantisColonist>50</MantisColonist>
					<MantisGuard>90</MantisGuard>
					<MantisFighter>100</MantisFighter>
					<MantisHunter>50</MantisHunter>
					<MantisHistGuard>100</MantisHistGuard>
					<MantisShadowscale>100</MantisShadowscale>
					<LTF_Mantis_Addicted>15</LTF_Mantis_Addicted>
				</options>
			</li>
		</pawnGroupMakers>
	</FactionDef>


</Defs>