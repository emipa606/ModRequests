<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- green insectoid puddles -->	
	<HediffDef ParentName="Hediff_HiddenBase">
		<defName>Hediff_Green_BloodDripping</defName>
		<!-- <defName>BNS_Hediff_BloodDripping_Green</defName> -->
		<hediffClass>HediffWithComps</hediffClass>

		<description>insectoid blood puddles</description>
		<label>BloodDripping.greenBlood</label>

		<comps>
			<li Class="BloodDripping.HediffCompProperties_BloodDripping">
				<race>Alien_Mantis</race>

				<period>40</period>
				<minPeriod>30</minPeriod>
				<maxPeriod>80</maxPeriod>

				<puddleMoteDef>
					<li>BNS_Mote_Blood_GA</li>
					<li>BNS_Mote_Blood_GB</li>
					<li>BNS_Mote_Blood_GC</li>
					<li>BNS_Mote_Blood_GD</li>
					<li>BNS_Mote_Blood_GE</li>
					<li>BNS_Mote_Blood_GF</li>
					<li>BNS_Mote_Blood_GG</li>
				</puddleMoteDef>

				<randomScale>.6~.75</randomScale>
				<randomRotation>-15~15</randomRotation>

				<deathPuddleMoteContainsString>BNS_Mote_DeathPuddle_G</deathPuddleMoteContainsString>

				<!-- <debug>true</debug> -->
			</li>
		</comps>
	</HediffDef>

</Defs>