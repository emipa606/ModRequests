<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<!-- mantis footprints -->	
	<HediffDef ParentName="Hediff_HiddenBase">
		<defName>Hediff_Mantis_Stain_Footprint</defName>
		<!-- <defName>BNS_Hediff_Stain_Footprint_Mantis</defName> -->
		<hediffClass>HediffWithComps</hediffClass>

		<description>mantis footprints</description>
		<label>Stain_Footprint.mantis</label>
		
		<comps>
			<li Class="BloodDripping.HediffCompProperties_Stain_Footprint">
				<race>Alien_Mantis</race>
				
				<period>30</period>
				
				<footprint>
					<li>
						<defName>red_fluid</defName>
						<triggerOnFilthDef>
							<li>Filth_Blood</li>
						</triggerOnFilthDef>
						<moteDef>Mote_Mantis_Red_Footprint</moteDef>
					</li>
					<li>
						<defName>lightgreen_fluid</defName>
						<triggerOnFilthDef>
							<li>Filth_BloodInsect</li>
						</triggerOnFilthDef>
						<moteDef>Mote_Mantis_LightGreen_Footprint</moteDef>
					</li>
					<li>
						<defName>yellow_fluid</defName>
						<triggerOnFilthDef>
							<li>Filth_Vomit</li>
						</triggerOnFilthDef>
						<moteDef>Mote_Mantis_Yellow_Footprint</moteDef>
					</li>
					<li>
						<defName>brown_fluid</defName>
						<triggerOnFilthDef>
							<li>Filth_AnimalFilth</li>
						</triggerOnFilthDef>
						<moteDef>Mote_Mantis_Brown_Footprint</moteDef>
					</li>
				</footprint>
			
				<randomScale>.5~.5</randomScale>
				<rightFootRotation>15</rightFootRotation>
				<leftFootRotation>-15</leftFootRotation>
				
				<!-- <debug>true</debug> -->
			</li>
		</comps>
	</HediffDef>
		
</Defs>