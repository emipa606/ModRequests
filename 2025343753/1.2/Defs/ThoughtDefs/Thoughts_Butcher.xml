<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Mantis thoughts when eating/butchering humans -->
	<ThoughtDef>
		<defName>LTF_Mantis_ButcheredHumanlikeCorpse</defName>
		<durationDays>3</durationDays>
		<stackLimit>15</stackLimit>
		<stackedEffectMultiplier>0.6</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>I butchered humanlike</label>
				<description>I butchered someone up like an animal.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>LTF_Mantis_KnowButcheredHumanlikeCorpse</defName>
		<durationDays>3</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>we butchered humanlike</label>
				<description>We butchered someone up like an animal.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- Other races thoughts when butchering mantis -->
	<ThoughtDef>
		<defName>ButcheredMantisCorpse</defName>
		<durationDays>6</durationDays>
		<stackLimit>15</stackLimit>
		<stackedEffectMultiplier>0.6</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>I butchered a sentient mantis</label>
				<description>I feel less ashamed about butchering it, because of how mercyless they are, but still...</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KnowButcheredMantisCorpse</defName>
		<durationDays>6</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>we butchered a sentient mantis</label>
				<description>We did it because we needed it, probably.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>