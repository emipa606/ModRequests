<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<RecipeDef>
		<defName>LTF_ButcherClaws</defName>
		<label>butcher natural mantis claws</label>
		<description>Peel a mantis claw to extract its juicy insect meat.</description>

		<descriptionHyperlinks>
			<ThingDef>Meat_Megaspider</ThingDef>
			<ThingDef>LTF_MantisRightClaws</ThingDef>
			<ThingDef>LTF_MantisLeftClaws</ThingDef>

			<ResearchProjectDef>LTF_Research_MantisBladeT0</ResearchProjectDef>
		</descriptionHyperlinks>

		<jobString>Peeling mantis claw.</jobString>
		<workAmount>150</workAmount>

		<workSpeedStat>ButcheryFleshEfficiency</workSpeedStat>
		<workSkill>Cooking</workSkill>
		<efficiencyStat>ButcheryFleshEfficiency</efficiencyStat>
		<effectWorking>ButcherFlesh</effectWorking>

		<soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
		<interruptIfIngredientIsRotting>true</interruptIfIngredientIsRotting>

		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>LTF_MantisRightClaws</li>
						<li>LTF_MantisLeftClaws</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>

		<fixedIngredientFilter>
			<thingDefs>
				<li>LTF_MantisRightClaws</li>
				<li>LTF_MantisLeftClaws</li>
			</thingDefs>
		</fixedIngredientFilter>

		<specialProducts>
			<li>Butchery</li>
		</specialProducts>

		<researchPrerequisite>LTF_Research_MantisBladeT0</researchPrerequisite>
	</RecipeDef>
</Defs>