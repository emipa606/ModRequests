<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Steel -->
	<ThoughtDef Name="LTF_SteelClawsThought"  Abstract="true">
		<defName>LTF_SteelClawsThought</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
	</ThoughtDef>

	<ThoughtDef ParentName="LTF_SteelClawsThought" >
		<defName>LTF_LeftSteelClawsThought</defName>
		<hediff>Hediff_LTF_LeftSteelClaws</hediff>
		<stages>
			<li>
				<label>phantom limb(left)</label>
				<description>How will I pimple pop my chitin?</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>

	</ThoughtDef>

	<ThoughtDef ParentName="LTF_SteelClawsThought" >
		<defName>LTF_RightSteelClawsThought</defName>
		<hediff>Hediff_LTF_RightSteelClaws</hediff>
		<stages>
			<li>
				<label>phantom limb(right)</label>
				<description>I never asked for this. They say they saved me, but I'm not sure saved is the right word.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- Plasteel -->
	<ThoughtDef Name="LTF_PlasteelClawsThought"  Abstract="true">
		<defName>LTF_PlasteelClawsThought</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
	</ThoughtDef>

	<ThoughtDef ParentName="LTF_PlasteelClawsThought" >
		<defName>LTF_LeftPlasteelClawsThought</defName>
		<hediff>Hediff_LTF_LeftPlasteelClaws</hediff>
		<stages>
			<li>
				<label>clawgmented(left)</label>
				<description>Feels like I'm wearing nothing at all!</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="LTF_PlasteelClawsThought" >
		<defName>LTF_RightPlasteelClawsThought</defName>
		<hediff>Hediff_LTF_RightPlasteelClaws</hediff>
		<stages>
			<li>
				<label>clawgmented(right)</label>
				<description>It is a time of great innovation and technological advancement.</description>			
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>