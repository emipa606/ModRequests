<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Base -->
	<ThoughtDef Name="LTF_ArtificialThought"  Abstract="true">
		<defName>LTF_ArtificialThought</defName>
		
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
	</ThoughtDef>

	<!-- Wood	 -->
	<ThoughtDef ParentName="LTF_ArtificialThought" >
		<defName>LTF_WoodenClawsThought</defName>
		<hediff>Hediff_LTF_WoodenClaws</hediff>
		<stages>
			<li>
				<label>cheap prosthesis</label>
				<description>Am I a joke to this colony? I'd rather proudly show my scares than this piece of wood.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="LTF_ArtificialThought" >
		<defName>LTF_WoodenShieldsThought</defName>
		<hediff>Hediff_LTF_WoodenShields</hediff>
		<stages>
			<li>
				<label>cheap prosthesis</label>
				<description>This buckler is a disgrace to my ancestors. This is not the mantis way.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<!-- Steel -->
	<ThoughtDef ParentName="LTF_ArtificialThought" >
		<defName>LTF_LeftSteelClawsThought</defName>
		<hediff>Hediff_LTF_LeftSteelClaws</hediff>
		<stages>
			<li>
				<label>phantom limb(left)</label>
				<description>How will I pimple pop my chitin?</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="LTF_ArtificialThought" >
		<defName>LTF_RightSteelClawsThought</defName>
		<hediff>Hediff_LTF_RightSteelClaws</hediff>
		<stages>
			<li>
				<label>phantom limb(right)</label>
				<description>I never asked for this. They say they saved me, but I'm not sure saved is the right word.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- Plasteel -->
	<ThoughtDef ParentName="LTF_ArtificialThought" >
		<defName>LTF_LeftPlasteelClawsThought</defName>
		<hediff>Hediff_LTF_LeftPlasteelClaws</hediff>
		<stages>
			<li>
				<label>clawgmented(left)</label>
				<description>Feels like I'm wearing nothing at all!</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="LTF_ArtificialThought" >
		<defName>LTF_RightPlasteelClawsThought</defName>
		<hediff>Hediff_LTF_RightPlasteelClaws</hediff>
		<stages>
			<li>
				<label>clawgmented(right)</label>
				<description>It is a time of great innovation and technological advancement.</description>			
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>