<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<!-- Asian Noble Cloth -->
	<ThingDef ParentName="ArmorSmithableBase">
		<defName>Ancient_AsianNobleCloth</defName>
		<label>Asian Noble Cloth</label>
		<description>Long, luxurious silk outfit with long sleeves. It was worn by officials of the ancient kingdom.</description>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<graphicData>
			<texPath>Apparel/AsianNobleCloth</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
		<costList>
			<Cloth>80</Cloth>
			<Steel>10</Steel>
		</costList>
		<statBases>
			<WorkToMake>9000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>0.6</Flammability>
			<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.15</ArmorRating_Blunt>
			<ArmorRating_Heat>0.27</ArmorRating_Heat>
			<Insulation_Cold>4</Insulation_Cold>
			<Insulation_Heat>4</Insulation_Heat>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<PainShockThreshold>0.1</PainShockThreshold>
			<SocialImpact>0.2</SocialImpact>
		</equippedStatOffsets>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Hands</li>
				<li>Legs</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/AsianNobleCloth</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Royal</li>
				<li>RoyalTier2</li>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255,255,255,255)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
