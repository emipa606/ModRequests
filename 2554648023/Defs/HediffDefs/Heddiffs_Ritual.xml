<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<HediffDef Name="Spirit_Sight">
    <defName>SpiritSight</defName>
	<hediffClass>SpiritSightForBlind.Hediff_SpiritSight</hediffClass>
	<label>Spirit sight</label>
    <description>This person was blinded in a ritual of Blinding. This person can now see things beyond physical realm.</description>
	<defaultLabelColor>(0.3,0.2,0.9)</defaultLabelColor>
    <isBad>false</isBad>
	<initialSeverity>1</initialSeverity> <!-- Severity is bound to level of spirit sight -->
    <minSeverity>0</minSeverity>
    <maxSeverity>4</maxSeverity>
	<stages>
      <li>
        <minSeverity>1</minSeverity>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>0.74</offset>
          </li>
		</capMods>
      </li>
      <li>
		<minSeverity>2</minSeverity>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>0.99</offset>
          </li>
		</capMods>
      </li>
      <li>
        <minSeverity>3</minSeverity>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>1.49</offset>
          </li>
		</capMods>
      </li>
		<li>
        <minSeverity>4</minSeverity>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>1.99</offset>
          </li>
		</capMods>
		</li>
    </stages>
	
</HediffDef>
</Defs>