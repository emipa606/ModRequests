<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Animals Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
		<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/RulePackDef[defName="GlobalUtility"]/rulePack/rulesFiles</xpath>
					<value>
						<li>VAEAnimal->Words/Nouns/VAEAnimals</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/RulePackDef[defName="WorldFeatureNamerCommon"]/rulePack/rulesStrings</xpath>
					<value>
						<li>MoreAnimals_name->[VAEAnimal]</li>
						<li>MoreAnimals_name->[Color][VAEAnimal]</li>
						<li>MoreAnimals_name->[AdjectiveNatural][VAEAnimal]</li>
						<li>MoreAnimals_name->[VAEAnimal][BodyPart]</li>
						<li>MoreAnimals_name->[Color] [VAEAnimal]</li>
						<li>MoreAnimals_name->[AdjectiveNatural] [VAEAnimal]</li>
						<li>MoreAnimals_name->[VAEAnimal] [BodyPart]</li>
						<li>subject(p=0.15)->[VAEAnimal]</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/RulePackDef[defName="WorldFeatureNamer_VTG"]/rulePack/rulesStrings</xpath>
					<value>
						<li>MoreAnimals_name->[VAEAnimal]</li>
						<li>MoreAnimals_name->[Color][VAEAnimal]</li>
						<li>MoreAnimals_name->[AdjectiveNatural][VAEAnimal]</li>
						<li>MoreAnimals_name->[VAEAnimal][BodyPart]</li>
						<li>MoreAnimals_name->[Color] [VAEAnimal]</li>
						<li>MoreAnimals_name->[AdjectiveNatural] [VAEAnimal]</li>
						<li>MoreAnimals_name->[VAEAnimal] [BodyPart]</li>
						<li>subject(p=0.15)->[VAEAnimal]</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/RulePackDef[defName="WorldFeatureNamerNoColor_VTG"]/rulePack/rulesStrings</xpath>
					<value>
						<li>MoreAnimals_name->[VAEAnimal]</li>
						<li>MoreAnimals_name->[AdjectiveNatural][VAEAnimal]</li>
						<li>MoreAnimals_name->[VAEAnimal][BodyPart]</li>
						<li>MoreAnimals_name->[AdjectiveNatural] [VAEAnimal]</li>
						<li>MoreAnimals_name->[VAEAnimal] [BodyPart]</li>
						<li>subject(p=0.15)->[VAEAnimal]</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>/Defs/RulePackDef[defName="WorldFeatureNamerNoAlphaAnimals_VTG"]/rulePack/rulesStrings</xpath>
					<value>
						<li>MoreAnimals_name->[VAEAnimal]</li>
						<li>MoreAnimals_name->[Color][VAEAnimal]</li>
						<li>MoreAnimals_name->[AdjectiveNatural][VAEAnimal]</li>
						<li>MoreAnimals_name->[VAEAnimal][BodyPart]</li>
						<li>MoreAnimals_name->[Color] [VAEAnimal]</li>
						<li>MoreAnimals_name->[AdjectiveNatural] [VAEAnimal]</li>
						<li>MoreAnimals_name->[VAEAnimal] [BodyPart]</li>
						<li>subject(p=0.15)->[VAEAnimal]</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>