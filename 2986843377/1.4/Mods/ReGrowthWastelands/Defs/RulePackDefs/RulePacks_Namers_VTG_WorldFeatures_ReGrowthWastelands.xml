<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- ReGrowth: Wastelands -->
  
   <RulePackDef>
    <defName>NamerWasteland</defName>
    <include>
      <li>WorldFeatureNamer_VTG</li>
    </include>
    <rulePack>
      <rulesStrings>
	    <li>r_name(p=1)->[narrative_name] [terrain_word_main]</li>
        <li>r_name(p=1)->[narrative_name] [wasteland_word] [terrain_word]</li>
        <li>r_name(p=0.05)->[storyname] [wasteland_word] [terrain_word]</li>
	  
        <li>wasteland_word(p=1)->toxic</li>
        <li>wasteland_word(p=0.5)->glowing</li>
        <li>wasteland_word(p=1)->contaminated</li>
        <li>wasteland_word(p=0.2)->desolated</li>
		<li>wasteland_word(p=0.2)->barren</li>
		<li>wasteland_word(p=0.2)->devastated</li>
		<li>wasteland_word(p=0.2)->mutated</li>			

        <li>terrain_word_main->wasteland</li>	 
        <li>terrain_word->wasteland</li>
        <li>terrain_word->zone</li>
        <li>terrain_word(p=0.2)->area</li>		
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>
