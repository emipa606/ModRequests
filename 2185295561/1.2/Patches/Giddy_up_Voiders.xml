<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
      <mods>
			<li>Giddy-up! Core</li>
		</mods>
	<match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
       
      <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "EH_Void_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.DrawingOffsetPatch">
            <!--Offsets can be configured for each view (north, south, west, east) separately using comma separated floating point values-->
            <northOffsetCSV>0,0,0.8</northOffsetCSV>
            <!--x,y,z coordinates. Mind that x: horizontal axis, y: drawing priority, z: vertical axis -->
            <southOffsetCSV>0,0,1.2</southOffsetCSV>
            <eastOffsetCSV>0.9,-0.1,0.8</eastOffsetCSV>
            <westOffsetCSV>-0.9,-0.1,0.8</westOffsetCSV>
          </li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
          <xpath>*/ThingDef[ defName = "Red_Nebula_Dragon"]</xpath>
          <value>
            <li Class="GiddyUpCore.DrawingOffsetPatch">
              <!--Offsets can be configured for each view (north, south, west, east) separately using comma separated floating point values-->
              <northOffsetCSV>0,0,0.8</northOffsetCSV>
              <!--x,y,z coordinates. Mind that x: horizontal axis, y: drawing priority, z: vertical axis -->
              <southOffsetCSV>0.1,0,1.2</southOffsetCSV>
              <eastOffsetCSV>1.1,0,0.8</eastOffsetCSV>
              <westOffsetCSV>-1.1,0,0.8</westOffsetCSV>
            </li>
          </value>
        </li>

      <li Class="PatchOperationAddModExtension">
          <xpath>*/ThingDef[ defName = "Eater_Void_Dragon"]</xpath>
          <value>
            <li Class="GiddyUpCore.DrawingOffsetPatch">
              <!--Offsets can be configured for each view (north, south, west, east) separately using comma separated floating point values-->
              <northOffsetCSV>-0.1,0,0.8</northOffsetCSV>
              <!--x,y,z coordinates. Mind that x: horizontal axis, y: drawing priority, z: vertical axis -->
              <southOffsetCSV>0.3,0,1.2</southOffsetCSV>
              <eastOffsetCSV>1.1,0,0.8</eastOffsetCSV>
              <westOffsetCSV>-1.1,0,0.8</westOffsetCSV>
            </li>
          </value>
        </li>

	<li Class="PatchOperationAddModExtension">
          <xpath>*/ThingDef[ defName = "Destroyer_Void_Dragon"]</xpath>
          <value>
            <li Class="GiddyUpCore.DrawingOffsetPatch">
              <!--Offsets can be configured for each view (north, south, west, east) separately using comma separated floating point values-->
              <northOffsetCSV>0,0,1</northOffsetCSV>
              <!--x,y,z coordinates. Mind that x: horizontal axis, y: drawing priority, z: vertical axis -->
              <southOffsetCSV>0.1,0,1.5</southOffsetCSV>
              <eastOffsetCSV>1.1,-0.1,0.8</eastOffsetCSV>
              <westOffsetCSV>-1.1,-0.1,0.8</westOffsetCSV>
            </li>
          </value>
        </li>

	<li Class="PatchOperationAddModExtension">
          <xpath>*/ThingDef[ defName = "Purple_Nebula_Dragon"]</xpath>
          <value>
            <li Class="GiddyUpCore.DrawingOffsetPatch">
              <!--Offsets can be configured for each view (north, south, west, east) separately using comma separated floating point values-->
              <northOffsetCSV>0,0,0.8</northOffsetCSV>
              <!--x,y,z coordinates. Mind that x: horizontal axis, y: drawing priority, z: vertical axis -->
              <southOffsetCSV>0.1,0,0.8</southOffsetCSV>
              <eastOffsetCSV>1.1,0,0.8</eastOffsetCSV>
              <westOffsetCSV>-1.1,0,0.8</westOffsetCSV>
            </li>
          </value>
        </li>

	<li Class="PatchOperationAddModExtension">
          <xpath>*/ThingDef[ defName = "Blue_Nebula_Dragon"]</xpath>
          <value>
            <li Class="GiddyUpCore.DrawingOffsetPatch">
              <!--Offsets can be configured for each view (north, south, west, east) separately using comma separated floating point values-->
              <northOffsetCSV>0.2,0,1.3</northOffsetCSV>
              <!--x,y,z coordinates. Mind that x: horizontal axis, y: drawing priority, z: vertical axis -->
              <southOffsetCSV>0.1,0,1.5</southOffsetCSV>
              <eastOffsetCSV>1.1,0,0.8</eastOffsetCSV>
              <westOffsetCSV>-1.1,0,0.8</westOffsetCSV>
            </li>
          </value>
        </li>
	
      <li Class="PatchOperationAddModExtension">
          <xpath>*/ThingDef[ defName = "Harbinger_Void_Dragon"]</xpath>
          <value>
            <li Class="GiddyUpCore.DrawingOffsetPatch">
              <!--Offsets can be configured for each view (north, south, west, east) separately using comma separated floating point values-->
              <northOffsetCSV>0,0,0.5</northOffsetCSV>
              <!--x,y,z coordinates. Mind that x: horizontal axis, y: drawing priority, z: vertical axis -->
              <southOffsetCSV>0.1,0,0.7</southOffsetCSV>
              <eastOffsetCSV>0.9,-1,0.6</eastOffsetCSV>
              <westOffsetCSV>-0.9,-1,0.6</westOffsetCSV>
            </li>
          </value>
        </li>

	<li Class="PatchOperationAddModExtension">
          <xpath>*/ThingDef[ defName = "Rurelion_Zol_Dragon"]</xpath>
          <value>
            <li Class="GiddyUpCore.DrawingOffsetPatch">
              <!--Offsets can be configured for each view (north, south, west, east) separately using comma separated floating point values-->
              <northOffsetCSV>0,0,0.8</northOffsetCSV>
              <!--x,y,z coordinates. Mind that x: horizontal axis, y: drawing priority, z: vertical axis -->
              <southOffsetCSV>0.1,0,1</southOffsetCSV>
              <eastOffsetCSV>0.9,-1,1.1</eastOffsetCSV>
              <westOffsetCSV>-0.9,-1,1.1</westOffsetCSV>
            </li>
          </value>
        </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "Red_Nebula_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.AllowedLifeStagesPatch">
            <allowedLifeStagesCSV>2,3,4</allowedLifeStagesCSV>
            <!-- Provide the life stage indices as csv here.-->
          </li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "Blue_Nebula_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.AllowedLifeStagesPatch">
            <allowedLifeStagesCSV>2,3,4</allowedLifeStagesCSV>
          </li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "Purple_Nebula_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.AllowedLifeStagesPatch">
            <allowedLifeStagesCSV>2,3,4</allowedLifeStagesCSV>
          </li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "Harbinger_Void_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.AllowedLifeStagesPatch">
            <allowedLifeStagesCSV>2,3,4</allowedLifeStagesCSV>
          </li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "Eater_Void_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.AllowedLifeStagesPatch">
            <allowedLifeStagesCSV>2,3,4</allowedLifeStagesCSV>
          </li>
        </value>
      </li>

      <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "EH_Void_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.AllowedLifeStagesPatch">
            <allowedLifeStagesCSV>2,3,4</allowedLifeStagesCSV>
          </li>
        </value>
      </li>
	  
	  <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "Destroyer_Void_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.AllowedLifeStagesPatch">
            <allowedLifeStagesCSV>2,3,4</allowedLifeStagesCSV>
          </li>
        </value>
      </li>
  
      <li Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[ defName = "Rurelion_Zol_Dragon"]</xpath>
        <value>
          <li Class="GiddyUpCore.AllowedLifeStagesPatch">
            <allowedLifeStagesCSV>2,3,4</allowedLifeStagesCSV>
          </li>
        </value>
      </li>

      <li Class="PatchOperationAdd">
    <xpath>
      Defs/ThingDef[
      defName = "Red_Nebula_Dragon"
      or 	defName = "Blue_Nebula_Dragon"
      or 	defName = "Purple_Nebula_Dragon"
      or 	defName = "EH_Void_Dragon"
      or 	defName = "Eater_Void_Dragon"
      or 	defName = "Harbinger_Void_Dragon"
      or 	defName = "Destroyer_Void_Dragon"
      or 	defName = "Rurelion_Zol_Dragon"
      ]/comps
    </xpath>
    <value>
      <li Class="GiddyUpCore.CompProperties_Mount">
        <drawFront>true</drawFront>
      </li>
    </value>
  </li>

      <li Class="PatchOperationAdd">
    <xpath>
      Defs/ThingDef[(
      defName = "Red_Nebula_Dragon"
      or 	defName = "Blue_Nebula_Dragon"
      or 	defName = "Purple_Nebula_Dragon"
      or 	defName = "EH_Void_Dragon"
      or 	defName = "Eater_Void_Dragon"
      or 	defName = "Harbinger_Void_Dragon"
      or 	defName = "Destroyer_Void_Dragon"
      or 	defName = "Rurelion_Zol_Dragon"
      ) and not(comps)]
    </xpath>
    <value>
      <comps>
        <li Class="GiddyUpCore.CompProperties_Mount">
          <drawFront>true</drawFront>
        </li>
      </comps>
    </value>
  </li>
      
    </operations>
  </match>
</Operation>
</Patch>