<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>MoodOffsetSanguine</defName>
    <workerClass>ThoughtWorker_AlwaysActive</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>NaturalMood</li>
    </requiredTraits>
    <requiredTraitsDegree>2</requiredTraitsDegree>
    <stages>
      <li>
        <label>sanguine</label>
        <description>Nothing can bring me down!</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MoodOffsetOptimist</defName>
    <workerClass>ThoughtWorker_AlwaysActive</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>NaturalMood</li>
    </requiredTraits>
    <requiredTraitsDegree>1</requiredTraitsDegree>
    <stages>
      <li>
        <label>optimist</label>
        <description>I'm always looking at the bright side of life.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MoodOffsetPessimist</defName>
    <workerClass>ThoughtWorker_AlwaysActive</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>NaturalMood</li>
    </requiredTraits>
    <requiredTraitsDegree>-1</requiredTraitsDegree>
    <stages>
      <li>
        <label>pessimist</label>
        <description>Life always finds a way to let me down.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MoodOffsetDepressive</defName>
    <workerClass>ThoughtWorker_AlwaysActive</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>NaturalMood</li>
    </requiredTraits>
    <requiredTraitsDegree>-2</requiredTraitsDegree>
    <stages>
      <li>
        <label>depressive</label>
        <description>Life is dull and colorless.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MoodOffsetTorturedArtist</defName>
    <workerClass>ThoughtWorker_AlwaysActive</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>TorturedArtist</li>
    </requiredTraits>
    <stages>
      <li>
        <label>Tortured artist</label>
        <description>Nobody understands my vision. My art is my only respite.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
