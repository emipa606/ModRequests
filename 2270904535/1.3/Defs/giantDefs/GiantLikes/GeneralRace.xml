                    <li>
					    <weight>5</weight>
					    <only>RGBA(1.0,1.0,1.0,1)</only>
			        </li>
					<li>
						<weight>3</weight>
						<only>RGBA(1,0.9,0.8,1)</only>
					</li>
					<li>
						<weight>2</weight>
						<only>RGBA(0.8,0.7,0.6,1)</only>
					</li>
					<li>
