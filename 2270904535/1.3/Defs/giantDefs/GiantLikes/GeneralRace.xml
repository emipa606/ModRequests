				    <defName>Transhumanist</defName>
			    	<chance>100</chance>
	     		</li>
	     		<li>
		     		<defName>BodyPurist</defName>
		    		<chance>100</chance>
		    	</li>
		    	<li>
		    		<defName>Jealous</defName>
		    		<chance>100</chance>
		    	</li>
