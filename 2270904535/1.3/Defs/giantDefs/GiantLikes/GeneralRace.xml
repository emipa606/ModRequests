					<degree>2</degree>
					<commonalityMale>0</commonalityMale>
					<commonalityFemale>100</commonalityFemale>
				</li>
				<li>
					<defName>PsychicSensitivity</defName>
					<degree>1</degree>
					<commonalityMale>0</commonalityMale>
					<commonalityFemale>100</commonalityFemale>
				</li>
				<li>
					<defName>PsychicSensitivity</defName>
					<degree>-1</degree>
					<commonalityMale>0</commonalityMale>
					<commonalityFemale>100</commonalityFemale>
				</li>
				<li>
					<defName>PsychicSensitivity</defName>
					<degree>-2</degree>
					<commonalityMale>0</commonalityMale>
					<commonalityFemale>100</commonalityFemale>
				</li>
				<li>
				    <defName>DrugDesire</defName>
					<degree>2</degree>
					<commonalityMale>0</commonalityMale>
					<commonalityFemale>100</commonalityFemale>
				</li>
				<li>
				    <defName>DrugDesire</defName>
					<degree>1</degree>
					<commonalityMale>0</commonalityMale>
					<commonalityFemale>100</commonalityFemale>
				</li>
				<li>
				    <defName>DrugDesire</defName>
