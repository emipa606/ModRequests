        <alienPartGenerator>
          <borderScale>3.012</borderScale>
		  <atlasScale>3.012</atlasScale>
		  <aliencrowntypes>            <!-- 헤드 -->
            <li>Average_1</li>
          </aliencrowntypes>
          <alienbodytypes>            <!-- 바디 -->
            <li>GiantF</li>
            <li>GiantM</li>
          </alienbodytypes>
          <headOffset>(0, 0)</headOffset>
          <useGenderedHeads>true</useGenderedHeads>
          <useGenderedBodies>false</useGenderedBodies>
