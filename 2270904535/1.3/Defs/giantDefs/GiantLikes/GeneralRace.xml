					<li>
						<weight>1</weight>
						<only>RGBA(1.0,1.0,1.0,1)</only>
					</li>
					<!-- 오렌지 -->
					<li>
						<weight>2</weight>
						<only>RGBA(0.85,0.48,0.16,1)</only>
					</li>
					<!-- 골드 -->
					<li>
						<weight>2</weight>
						<only>RGBA(0.88,0.82,0.68,1)</only>
					</li>
					<!-- 네이비 -->
					<li>
						<weight>3</weight>
						<only>RGBA(0.32,0.34,0.42,1)</only>
					</li>
					<!-- 레드 -->
					<li>
						<weight>3</weight>
						<only>RGBA(0.82,0.32,0.23,1)</only>
					</li>
				</options>
              </first>
            </li>
