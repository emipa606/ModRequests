<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--- 거인 장갑복 -->
    <ThingDef ParentName="GI_ApparelBase">
        <defName>GI_Powerarmour</defName>
        <description>It's a giant power armor made for a giant. Propulsion equipment and thermostat are built in. The giant wearing this is a giant war machine itself.</description>
        <label>Cyclops Armour</label>
		<recipeMaker>
            <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
            <researchPrerequisite>PoweredArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
			<recipeUsers Inherit="false">
			    <li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Giant/Apparel/Powerarmour/GI_Powerarmour</texPath>
            <graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
        </graphicData>
		<techLevel>Spacer</techLevel>
        <costList>
            <ComponentSpacer>12</ComponentSpacer>
            <Plasteel>400</Plasteel>
            <Uranium>120</Uranium>
        </costList>
        <statBases>
            <MaxHitPoints>1640</MaxHitPoints>
            <WorkToMake>260000</WorkToMake>
            <Mass>20.4</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>1.65</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.32</ArmorRating_Blunt>
			<ArmorRating_Heat>1.14</ArmorRating_Heat>
            <Insulation_Cold>35</Insulation_Cold>
            <Insulation_Heat>20</Insulation_Heat>
			<EquipDelay>26</EquipDelay>
        </statBases>
		<thingSetMakerTags>
		    <li>RewardStandardHighFreq</li>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<equippedStatOffsets>
		    <MoveSpeed>0.5</MoveSpeed>
			<PainShockThreshold>0.2</PainShockThreshold>
			<CarryingCapacity>30</CarryingCapacity>
			<Flammability>-0.8</Flammability>
			<IncomingDamageFactor>-0.10</IncomingDamageFactor>
		</equippedStatOffsets>
		<thingCategories>
		    <li>ApparelArmor</li>
		</thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Giant/Apparel/Powerarmour/GI_Powerarmour</wornGraphicPath>
            <layers>
                <li>Middle</li>
				<li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <tags>
                <li>GiantStory</li>
            </tags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
        </apparel>
    </ThingDef>
