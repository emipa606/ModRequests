<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>RimFantasy - Gemstones</li>
		</mods>

		<match Class="PatchOperationSequence">


			<operations>

				<!-- Add CaS Resource Recipes -->

				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<RecipeDef>
							<defName>RFGS_CutSapphire</defName>
							<recipeUsers>
								<li>TableClockwork</li>
							</recipeUsers>
							<label>cut sapphire</label>
							<description>Cut sapphire for advanced use.</description>
							<jobString>Cutting sapphire</jobString>
							<workAmount>50</workAmount>
							<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
							<effectWorking>Smelt</effectWorking>
							<soundWorking>Recipe_Smelt</soundWorking>
							<researchPrerequisite>Clockwork</researchPrerequisite>
							<products>
								<CaS_Sapphire>3</CaS_Sapphire>
							</products>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>RF_Sapphire</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
						</RecipeDef>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<RecipeDef>
							<defName>RFGS_CutRuby</defName>
							<recipeUsers>
								<li>TableClockwork</li>
							</recipeUsers>
							<label>cut ruby</label>
							<description>Cut ruby for advanced use.</description>
							<jobString>Cutting ruby</jobString>
							<workAmount>50</workAmount>
							<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
							<effectWorking>Smelt</effectWorking>
							<soundWorking>Recipe_Smelt</soundWorking>
							<researchPrerequisite>Clockwork</researchPrerequisite>
							<products>
								<CaS_Ruby>3</CaS_Ruby>
							</products>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>RF_Ruby</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
						</RecipeDef>
					</value>
				</li>

			</operations>

		</match>
	</Operation>

</Patch>