<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Expanded Materials - Metals</li>
			<li>Cupro's Alloys (Continued)</li>
			<li>Ancient Rim - Core (Continued)</li>
			<li>Industrialisation</li>
			<li>Industrialisation Rebuild</li>
			<li>RimForge</li>
		</mods>
		
		<match Class="PatchOperationSequence">
		<operations>
		
		<!-- Remove CaS Copper -->
	
		<li Class="PatchOperationRemove">
	    <xpath>/Defs/ThingDef[defName = "CaS_MineableCopper"]</xpath>
		</li>

		<li Class="PatchOperationReplace">
    	<xpath>/Defs/ThingDef[defName = "CaS_Copper"]/stuffProps/commonality</xpath>
   			<value>
       			<commonality>0</commonality>
    		</value>
		</li>

		<li Class="PatchOperationReplace">
    	<xpath>/Defs/ThingDef[defName = "CaS_Copper"]/deepCommonality</xpath>
   			<value>
       			<deepCommonality>0</deepCommonality>
    		</value>
		</li>

		<li Class="PatchOperationRemove">
    	<xpath>/Defs/ThingDef[defName = "CaS_Copper"]/deepLumpSizeRange</xpath>
		</li>
		
		</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Expanded Materials - Metals</li>
			<li>Cupro's Alloys (Continued)</li>
			<li>RimForge</li>
		</mods>
		
		<match Class="PatchOperationSequence">
		<operations>
		
		<!-- Remove CaS Tin -->
	
		<li Class="PatchOperationRemove">
	    <xpath>/Defs/ThingDef[defName = "CaS_MineableTin"]</xpath>
		</li>

		<li Class="PatchOperationReplace">
    	<xpath>/Defs/ThingDef[defName = "CaS_Tin"]/stuffProps/commonality</xpath>
   			<value>
       			<commonality>0</commonality>
    		</value>
		</li>

		<li Class="PatchOperationReplace">
    	<xpath>/Defs/ThingDef[defName = "CaS_Tin"]/deepCommonality</xpath>
   			<value>
       			<deepCommonality>0</deepCommonality>
    		</value>
		</li>

		<li Class="PatchOperationRemove">
    	<xpath>/Defs/ThingDef[defName = "CaS_Tin"]/deepLumpSizeRange</xpath>
		</li>
		
		</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Cupro's Alloys (Continued)</li>
		</mods>
		
		<match Class="PatchOperationSequence">
		<operations>
		
		<!-- Remove CaS Zinc -->
	
		<li Class="PatchOperationRemove">
	    <xpath>/Defs/ThingDef[defName = "CaS_MineableZinc"]</xpath>
		</li>

		<li Class="PatchOperationReplace">
    	<xpath>/Defs/ThingDef[defName = "CaS_Zinc"]/stuffProps/commonality</xpath>
   			<value>
       			<commonality>0</commonality>
    		</value>
		</li>

		<li Class="PatchOperationReplace">
    	<xpath>/Defs/ThingDef[defName = "CaS_Zinc"]/deepCommonality</xpath>
   			<value>
       			<deepCommonality>0</deepCommonality>
    		</value>
		</li>

		<li Class="PatchOperationRemove">
    	<xpath>/Defs/ThingDef[defName = "CaS_Zinc"]/deepLumpSizeRange</xpath>
		</li>
		
		</operations>
		</match>
	</Operation>

</Patch>