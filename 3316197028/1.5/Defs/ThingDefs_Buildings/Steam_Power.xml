<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>SteamPipe</defName>
    <label>steam pipe</label>
    <description>A reinforced copper pipe used to carry steam pressure from location to location. Can be placed under walls and other buildings.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/SteamPipe_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.75</drawSize>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom6</li>
      </linkFlags>
      <damageData>
        <rect>(0,0.35,1,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/SteamPipe_MenuIcon</uiIconPath>
    <uiIconScale>0.8</uiIconScale>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/PowerConduit_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>Standable</passability>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Flammability>0.7</Flammability>
      <Beauty>-2</Beauty>
    </statBases>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <costList>
      <CaS_Copper>5</CaS_Copper>
      <Steel>2</Steel>
    </costList>
    <comps>
      <li Class="Clockwork.CompProperties_CompSteam">
        <volume>0.5</volume>
        <pipe>true</pipe>
      </li>
    </comps>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Steampunk</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <clearBuildingArea>false</clearBuildingArea>
    <researchPrerequisites>
      <li>SteamPower</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>SteamCollector</defName>
    <label>steam collector</label>
    <description>A specialised device used to capture steam and channel it into the network.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/SteamCollector</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <shadowData>
        <volume>(1.93,1,1.69)</volume>
        <offset>(-0.03,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>12000</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Beauty>-30</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(2,2)</size>
    <costList>
      <Steel>50</Steel>
      <CaS_Copper>50</CaS_Copper>
      <RivetedLeather>10</RivetedLeather>
    </costList>
    <comps>
      <li Class="Clockwork.CompProperties_SteamGenerator">
        <volume>4</volume>
        <maxPressure>2500</maxPressure>
        <steamGeneration>600</steamGeneration>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Steampunk</designationCategory>
    <placeWorkers>
      <li>PlaceWorker_OnSteamGeyser</li>
    </placeWorkers>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <soundAmbient>GeothermalPlant_Ambience</soundAmbient>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>SteamPower</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>


  <ThingDef ParentName="BuildingBase">
    <defName>SteamBoiler</defName>
    <label>steam boiler</label>
    <description>A large machine used to boil water into steam.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/SteamBoiler</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <shadowData>
        <volume>(1.93,1,1.69)</volume>
        <offset>(-0.03,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>12000</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Beauty>-30</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(2,2)</size>
    <costList>
      <Steel>100</Steel>
      <CaS_Copper>50</CaS_Copper>
      <BrassGears>1</BrassGears>
      <RivetedLeather>5</RivetedLeather>
    </costList>
    <comps>
      <li Class="Clockwork.CompProperties_SteamGenerator">
        <volume>8</volume>
        <maxPressure>2500</maxPressure>
        <steamGeneration>500</steamGeneration>
        <soundAmbientProducingSteam>WoodFiredGenerator_Ambience</soundAmbientProducingSteam>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>5.0</fuelConsumptionRate>
        <fuelCapacity>100</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>CaS_Coal</li>
          </thingDefs>
        </fuelFilter>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(217,112,33,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>6</heatPerSecond>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Steampunk</designationCategory>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>SteamPower</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>

   <ThingDef ParentName="BuildingBase">
    <defName>SteamAccumulator</defName>
    <label>steam accumulator</label>
    <description>A large vessle designed to hold steam.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/SteamAccumulator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,4)</drawSize>
      <drawOffset>(0,0,1)</drawOffset>
      <shadowData>
        <volume>(2.5,2.5,2.5)</volume>
        <offset>(-0.03,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>20000</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Beauty>-50</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(3,2)</size>
    <costList>
      <Steel>50</Steel>
      <CaS_Copper>25</CaS_Copper>
    </costList>
    <comps>
      <li Class="Clockwork.CompProperties_CompSteam">
        <volume>24</volume>
        <maxPressure>5000</maxPressure>
      </li>
    </comps>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Steampunk</designationCategory>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>SteamPower</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>SteamGauge</defName>
    <label>steam gauge</label>
    <description>A simple gauge. Essentially decorative, but it does provide some additional information about a steam system.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/SteamGauge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.5</drawSize>
    </graphicData>
    <rotatable>false</rotatable>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>500</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Beauty>20</Beauty>
    </statBases>
    <costList>
      <CaS_Copper>5</CaS_Copper>
    </costList>
    <comps>
      <li Class="Clockwork.CompProperties_SteamGauge">
        <volume>0</volume>
      </li>
    </comps>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>SteamPower</li>
    </researchPrerequisites>
    <clearBuildingArea>false</clearBuildingArea>
    <designationCategory>Steampunk</designationCategory>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isEdifice>false</isEdifice>
    </building>
  </ThingDef>
</Defs>