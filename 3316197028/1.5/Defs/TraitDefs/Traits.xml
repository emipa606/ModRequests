<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TraitDef>
    <defName>Clockmaker</defName>
    <degreeDatas>
      <li>
        <label>clockmaker</label>
        <commonality>0.2</commonality>
        <description>{PAWN_nameDef} has become a renouned clockmaker. {PAWN_pronoun} excels at creating mechnical devices.</description>
        <statOffsets>
          <GlobalLearningFactor>0.25</GlobalLearningFactor>
          <MentalBreakThreshold>0.05</MentalBreakThreshold>
        </statOffsets>
        <skillGains>
          <Intellectual>2</Intellectual>
          <Crafting>4</Crafting>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Alchemist</li>
      <li>Artisan</li>
      <li>Artificer</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Intellectual</li>
      <li>Crafting</li>
    </requiredWorkTags>
  </TraitDef>

  <TraitDef>
    <defName>Alchemist</defName>
    <degreeDatas>
      <li>
        <label>alchemist</label>
        <commonality>0.1</commonality>
        <description>{PAWN_nameDef} has become a renouned alchemist. {PAWN_pronoun} excels at alchemy.</description>
        <statOffsets>
          <GlobalLearningFactor>0.30</GlobalLearningFactor>
          <MentalBreakThreshold>0.15</MentalBreakThreshold>
        </statOffsets>
        <skillGains>
          <Plants>2</Plants>
          <Intellectual>4</Intellectual>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Clockmaker</li>
      <li>Artisan</li>
      <li>Artificer</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Intellectual</li>
      <li>PlantWork</li>
    </requiredWorkTags>
  </TraitDef>

  <TraitDef>
    <defName>Artisan</defName>
    <degreeDatas>
      <li>
        <label>artisan</label>
        <commonality>0.2</commonality>
        <description>{PAWN_nameDef} has become a renouned artisan. {PAWN_pronoun} excels at creating beautiful marvels.</description>
        <statOffsets>
          <GlobalLearningFactor>0.10</GlobalLearningFactor>
          <MentalBreakThreshold>0.15</MentalBreakThreshold>
        </statOffsets>
        <skillGains>
          <Crafting>2</Crafting>
          <Artistic>4</Artistic>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Alchemist</li>
      <li>Clockmaker</li>
      <li>Artificer</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Artistic</li>
      <li>Crafting</li>
    </requiredWorkTags>
  </TraitDef>

  <TraitDef>
    <defName>Artificer</defName>
    <degreeDatas>
      <li>
        <label>artificer</label>
        <commonality>0.1</commonality>
        <description>{PAWN_nameDef} has become a renouned artificer. {PAWN_pronoun} excels at all matter of esoterica.</description>
        <statOffsets>
          <GlobalLearningFactor>0.30</GlobalLearningFactor>
          <MentalBreakThreshold>0.15</MentalBreakThreshold>
        </statOffsets>
        <skillGains>
          <Intellectual>2</Intellectual>
          <Crafting>2</Crafting>
          <Artistic>2</Artistic>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Alchemist</li>
      <li>Clockmaker</li>
      <li>Artisan</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Intellectual</li>
      <li>Crafting</li>
      <li>Artistic</li>
    </requiredWorkTags>
  </TraitDef>

  <TraitDef>
    <defName>Dandy</defName>
    <degreeDatas>
      <li>
        <label>dandy</label>
        <commonality>0.2</commonality>
        <description>{PAWN_nameDef} is quite the dandy. {PAWN_pronoun} will be unhappy without fancy clothes, but they will enjoy wearing them more than the average person.</description>
        <marketValueFactorOffset>0.1</marketValueFactorOffset>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Ascetic</li>
      <li>Nudist</li>
    </conflictingTraits>
  </TraitDef>


