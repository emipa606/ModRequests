<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <DamageDef>
    <defName>AlchemicalFrost</defName>
    <label>alchemical frost</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <hasForcefulImpact>false</hasForcefulImpact>
    <makesBlood>false</makesBlood>
    <canInterruptJobs>false</canInterruptJobs>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has succumbed to alchemical frost.</deathMessage>
    <hediff>Frostbite</hediff>
    <additionalHediffs>
      <li>
        <hediff>AlchemicalFrost</hediff>
        <severityPerDamageDealt>0.05</severityPerDamageDealt>
        <victimSeverityScalingByInvBodySize>true</victimSeverityScalingByInvBodySize>
      </li>
    </additionalHediffs>
    <armorCategory>Heat</armorCategory>
    <minDamageToFragment>3</minDamageToFragment>
    <defaultDamage>10</defaultDamage>
    <defaultArmorPenetration>0</defaultArmorPenetration>
    <explosionHeatEnergyPerCell>-15</explosionHeatEnergyPerCell>
    <explosionCellFleck>BlastFlame</explosionCellFleck>
    <explosionColorCenter>(40, 170, 225)</explosionColorCenter>
    <explosionColorEdge>(90, 190, 235)</explosionColorEdge>
    <soundExplosion>Explosion_Smoke</soundExplosion>
    <canUseDeflectMetalEffect>false</canUseDeflectMetalEffect>
  </DamageDef>

  <DamageDef>
    <defName>AlchemicalInk</defName>
    <label>alchemical ink</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <hasForcefulImpact>false</hasForcefulImpact>
    <makesBlood>false</makesBlood>
    <canInterruptJobs>false</canInterruptJobs>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has succumbed to alchemical ink.</deathMessage>
    <hediff>Scratch</hediff>
    <additionalHediffs>
      <li>
        <hediff>AlchemicalInk</hediff>
        <severityPerDamageDealt>0.03</severityPerDamageDealt>
        <victimSeverityScalingByInvBodySize>true</victimSeverityScalingByInvBodySize>
      </li>
    </additionalHediffs>
    <defaultDamage>3</defaultDamage>
    <defaultArmorPenetration>0</defaultArmorPenetration>
    <soundExplosion>Explosion_Smoke</soundExplosion>
  </DamageDef>

  <DamageDef>
    <defName>ElectrostaticBullet</defName>
    <label>electrostatic bullet</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <hasForcefulImpact>false</hasForcefulImpact>
    <makesBlood>false</makesBlood>
    <canInterruptJobs>false</canInterruptJobs>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been electrocuted.</deathMessage>
    <hediff>Scratch</hediff>
    <additionalHediffs>
      <li>
        <hediff>Shocked</hediff>
        <severityPerDamageDealt>0.30</severityPerDamageDealt>
        <victimSeverityScalingByInvBodySize>true</victimSeverityScalingByInvBodySize>
      </li>
    </additionalHediffs>
    <impactSoundType>Bullet</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <isRanged>true</isRanged>
    <makesAnimalsFlee>true</makesAnimalsFlee>
  </DamageDef>

</Defs>
