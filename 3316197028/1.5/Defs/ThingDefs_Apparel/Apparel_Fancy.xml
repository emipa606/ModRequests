  <ThingDef Class="Clockwork.ThingDef_FancyApparel" ParentName="HatMakeableBase">
    <defName>Apparel_FlowerHat</defName>
    <label>flower hat</label>
    <description>An elaborate hat made from fabic and a collection of flowers!</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Apparel/FlowerHatIcon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
