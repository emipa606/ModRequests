<Defs>

<RecipeDef MayRequire="Persona Bond Forge">
    <defName>Make_WP_Kyokatana</defName>
    <label>bond kyokatana</label>
    <description>Bond a kyokatana.</description>
    <jobString>Forging a kyokatana.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>200000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MeleeWeapon_PlasmaSword</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>BondingCore</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MeleeWeapon_PlasmaSword</li>
		<li>Plasteel</li>
		<li>Gold</li>
        <li>BondingCore</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <WP_Kyokatana>1</WP_Kyokatana>
    </products>
    <skillRequirements>
      <Intellectual>15</Intellectual>
    </skillRequirements>
    <workSkill>Intellectual</workSkill>
	<recipeUsers>
		<li>BondingBench</li>
	</recipeUsers>
</RecipeDef>

