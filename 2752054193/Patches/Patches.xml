<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Expanded Framework</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs</xpath>
          <value>
            <MVCF.ModDef>
              <defName>Caaz_Typhon</defName>
              <label>Typhon</label>
              <description>Add animal ranged attacks for Typhon.</description>
              <Features>
                <RangedAnimals>true</RangedAnimals>
              </Features>
            </MVCF.ModDef>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="Typhon_Phantom_Race"]</xpath>
          <value>
            <verbs>
              <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Typhon_Projectile_KineticOrb</defaultProjectile>
                <warmupTime>1</warmupTime>
                <range>10</range>
                <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                <soundCast>Shot_ChargeBlaster</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>0</muzzleFlashScale>
              </li>
            </verbs>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="Typhon_Phantom_Race"]/comps</xpath>
          <value>
            <li Class="AnimalBehaviours.CompProperties_Blink">
              <blinkInterval>1000</blinkInterval>
              <distance>2~10</distance>
              <blinkWhenManhunter>true</blinkWhenManhunter>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="Typhon_Telepath_Race"]</xpath>
          <value>
            <verbs>
              <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Typhon_Projectile_PsychicOrb</defaultProjectile>
                <warmupTime>1</warmupTime>
                <range>10</range>
                <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                <soundCast>Shot_ChargeBlaster</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>0</muzzleFlashScale>
              </li>
            </verbs>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="FabricationBench"]/recipes</xpath>
    <value>
      <li>Typhon_Make_Skilltrainer_Shooting</li>
      <li>Typhon_Make_Skilltrainer_Melee</li>
      <li>Typhon_Make_Skilltrainer_Construction</li>
      <li>Typhon_Make_Skilltrainer_Mining</li>
      <li>Typhon_Make_Skilltrainer_Cooking</li>
      <li>Typhon_Make_Skilltrainer_Plants</li>
      <li>Typhon_Make_Skilltrainer_Animals</li>
      <li>Typhon_Make_Skilltrainer_Crafting</li>
      <li>Typhon_Make_Skilltrainer_Artistic</li>
      <li>Typhon_Make_Skilltrainer_Medicine</li>
      <li>Typhon_Make_Skilltrainer_Social</li>
      <li>Typhon_Make_Skilltrainer_Intellectual</li>
    </value>
  </Operation>
</Patch>