<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Pawnmorpher</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>

				<ThingDef ParentName="InjectorBase">
					<defName>RedWolfTransformer</defName>
					<label>mutasyringe, red wolf</label>
					<description>A mutagenic injector filled with mechanites and red wolf DNA. Use with caution, as leaving the mechanites unchecked may transform the user.</description>
					<ingestible>
						<outcomeDoers>
							<li Class="IngestionOutcomeDoer_GiveHediff">
								<hediffDef>PawnmorphRedWolfTF</hediffDef>
								<severity>1.00</severity>
							</li>
						</outcomeDoers>
					</ingestible>	
				</ThingDef>

			</value>
		</match>
	</Operation>
</Patch>
