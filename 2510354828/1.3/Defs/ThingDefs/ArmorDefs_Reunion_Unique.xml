<Defs>
	
	<!-- ========================= Talulah ========================= -->
  
  <!-- Talulah Battle Dress -->
  
  <ThingDef ParentName="ArmorMachineableBase">
		<defName>ReunionTalulahDress</defName>
		<label>talulah battle dress</label>
		<description>Placeholder.</description>
		<graphicData>
			<texPath>Things/Apparel/Unique/Talulah/BattleDress/TalulahBattleDress</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.55</drawSize>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
		<costList>
			<Steel>30</Steel>
			<Cloth>40</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>280</MaxHitPoints>
			<WorkToMake>45000</WorkToMake>
			<Mass>4</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Cold>25</Insulation_Cold>
			<Insulation_Heat>20</Insulation_Heat>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<IncomingDamageFactor>0.05</IncomingDamageFactor>
		</equippedStatOffsets>
    <thingCategories Inherit='False'>
      <li>Reunion_Apparel_Talulah</li>
    </thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Unique/Talulah/BattleDress/TalulahDress</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Talulah</li>
			</tags>
			<!--defaultOutfitTags>
				<li>Soldier</li>
            </defaultOutfitTags-->
		</apparel>
    </ThingDef>
  
