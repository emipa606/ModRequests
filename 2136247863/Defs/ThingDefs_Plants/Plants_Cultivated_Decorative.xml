<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>Plant_HeatFlower</defName>
    <label>thermo lily</label>
    <description>A rare flower with glowing leaves. Infused with thermo micro-organisms, thermo lillies develop an affinity to produce heat, allowing them to warm up small spaces.\n\nIf a person (psycaster or not) meditates near a thermo lily, it will allow a pawn to regain psycast focus.</description>
    <graphicData>
      <texPath>Things/Plant/ThermoPlant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>5</Beauty>
      <BeautyOutdoors>5</BeautyOutdoors>
      <MeditationFocusStrength>0.15</MeditationFocusStrength>
      <Flammability>0</Flammability>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <ingestible>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
    </ingestible>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
    <canScatterOver>false</canScatterOver>
    <plant>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Decorative</li>
			</sowTags>
			<topWindExposure>0.0</topWindExposure>
			<growMinGlow>0.3</growMinGlow>
			<growDays>3.5</growDays>
            <lifespanDaysPerGrowDays>14.5</lifespanDaysPerGrowDays>
			<visualSizeRange>0.59~0.6</visualSizeRange>
            <purpose>Beauty</purpose>
            <sowMinSkill>4</sowMinSkill>
			<sowResearchPrerequisites>
                <li>ThermoLily</li>
            </sowResearchPrerequisites>
    </plant>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Natural</li>
		  <li>Flame</li>
        </focusTypes>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(184,136,83,0)</glowColor>
      </li>
	  <li Class="CompProperties_HeatPusher">
        <heatPerSecond>20.3</heatPerSecond>
        <heatPushMaxTemperature>25</heatPushMaxTemperature>
      </li>
    </comps>
  </ThingDef>
</Defs>
