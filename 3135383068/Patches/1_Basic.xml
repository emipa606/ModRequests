<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>

		<!-- FineFloor -->
		<li Class="PatchOperationAdd">
			<xpath>Defs/TerrainDef[defName="MUS_Gothicstyle_Floor_ScarletMosaicFloorTiles"]</xpath>
			<value>
				<tags>
					<li>FineFloor</li>
				</tags>
			</value>
		</li>			
		<li Class="PatchOperationAdd">
			<xpath>Defs/TerrainDef[defName="MUS_Gothicstyle_Floor_ScarletCarpet"]</xpath>
			<value>
				<tags>
					<li>FineFloor</li>
				</tags>
			</value>
		</li>

		<!-- Make GDBed Double & Royal for all titles -->		
		<li Class="PatchOperationAdd">
			<xpath>Defs/RoyalTitleDef/bedroomRequirements/li[@Class="RoomRequirement_ThingAnyOf"]/things[li="DoubleBed"]</xpath>
			<value>
				<li>MUS_Gothicstyle_DoubleBed</li>
				<li>MUS_Gothicstyle_CoffinBed</li>
			</value>
		</li>
		
		<li Class="PatchOperationAdd">
			<xpath>Defs/RoyalTitleDef/bedroomRequirements/li[@Class="RoomRequirement_ThingAnyOf"]/things[li="RoyalBed"]</xpath>
			<value>
				<li>MUS_Gothicstyle_DoubleBed</li>
				<li>MUS_Gothicstyle_CoffinBed</li>
			</value>
		</li>
		
		</operations>
		
    </Operation>				
</Patch>


				