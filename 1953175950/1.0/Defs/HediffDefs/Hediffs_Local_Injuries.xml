<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="InjuryBase">
    <defName>FimirWither</defName>
    <label>wither</label>
    <labelNoun>withering</labelNoun>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>bandaged</labelTendedWell>
        <labelTendedWellInner>sutured</labelTendedWellInner>
        <labelSolidTendedWell>set</labelSolidTendedWell>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.30</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>wither scar</permanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.012</painPerSeverity>
      <bleedRate>0</bleedRate>
      <averagePainPerSeverityPermanent>0.006</averagePainPerSeverityPermanent>
      <canMerge>true</canMerge>
      <destroyedLabel>Withered</destroyedLabel>
      <destroyedOutLabel>Withered</destroyedOutLabel>
    </injuryProps>
  </HediffDef>

  <HediffDef>
    <defName>FimirWitherBuildup</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <label>withering</label>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>false</scenarioCanAdd>
    <taleOnVisible>FimirWitherRevealed</taleOnVisible>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.3</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>FimirWitherWeaknessMinor</hediff>
            <mtbDays>39</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <vomitMtbDays>1</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>FimirWitherWeaknessMajor</hediff>
            <mtbDays>39</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.75</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.75</offset>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>FimirWitherWeaknessExtreme</hediff>
            <mtbDays>39</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="DiseaseBase">
    <defName>FimirWitherWeaknessMinor</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>withered</label>
    <labelNoun>withered</labelNoun>
    <tendable>false</tendable>
    <stages>
      <li>
        <label>minor</label>
        <partEfficiencyOffset>-0.25</partEfficiencyOffset>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="DiseaseBase">
    <defName>FimirWitherWeaknessMajor</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>withered</label>
    <labelNoun>withered</labelNoun>
    <tendable>false</tendable>
    <stages>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>major</label>
        <partEfficiencyOffset>-0.8</partEfficiencyOffset>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="DiseaseBase">
    <defName>FimirWitherWeaknessExtreme</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>withered</label>
    <labelNoun>withered</labelNoun>
    <tendable>false</tendable>
    <stages>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>extreme</label>
        <partEfficiencyOffset>-0.9</partEfficiencyOffset>
      </li>
    </stages>
  </HediffDef>

</Defs>
