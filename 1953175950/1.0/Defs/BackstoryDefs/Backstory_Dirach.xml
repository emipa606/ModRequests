<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Adulthood -->

  <AlienRace.BackstoryDef>
    <defName>DirachApprentice</defName>
    <title>Apprentice</title>
    <titleShort>Apprentice</titleShort>
    <baseDescription>[PAWN_nameDef] follows other Dirachs in the pursuit of knowledge.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Male</bodyTypeFemale>
    <skillGains>
    <li>
      <defName>Intellectual</defName>
      <amount>1</amount>
    </li>
    <li>
      <defName>Shooting</defName>
      <amount>4</amount>
    </li>
    <li>
      <defName>Medicine</defName>
      <amount>2</amount>
    </li>
      </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirDirach</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>DirachFighter</defName>
    <title>Warlock</title>
    <titleShort>Warlock</titleShort>
    <baseDescription>[PAWN_nameDef] fulfills his duty on the battlefield. Joining the fray as a powerful pawn.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Male</bodyTypeFemale>
    <skillGains>
    <li>
      <defName>Melee</defName>
      <amount>7</amount>
    </li>
    <li>
      <defName>Shooting</defName>
      <amount>7</amount>
    </li>
    <li>
      <defName>Medicine</defName>
      <amount>3</amount>
    </li>
      </skillGains>
    <slot>Adulthood</slot>
    <workDisables>
      <li>ManualDumb</li>
    </workDisables>
    <spawnCategories>
      <li>FimirDirach</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>DirachHermit</defName>
    <title>Hermit</title>
    <titleShort>Hermit</titleShort>
    <baseDescription>[PAWN_nameDef] keeps away from the clans political matters. [PAWN_pronoun] lives on the outskirts aiding the clan when the Meargh calls on [PAWN_objective].</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Male</bodyTypeFemale>
    <skillGains>
    <li>
      <defName>Plants</defName>
      <amount>5</amount>
    </li>
    <li>
      <defName>Intellectual</defName>
      <amount>2</amount>
    </li>
    <li>
      <defName>Medicine</defName>
      <amount>3</amount>
    </li>
      </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirDirach</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>DirachAdvisor</defName>
    <title>Advisor</title>
    <titleShort>Adviosr</titleShort>
    <baseDescription>[PAWN_nameDef] a wiseman of the clan. [PAWN_pronoun] holds the duty of a advisor under the clans Meargh.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Male</bodyTypeFemale>
    <skillGains>
    <li>
      <defName>Social</defName>
      <amount>5</amount>
    </li>
    <li>
      <defName>Intellectual</defName>
      <amount>3</amount>
    </li>
    </skillGains>
    <workDisables>
      <li>ManualDumb</li>
    </workDisables>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirDirach</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <!-- Childhood -->

  <AlienRace.BackstoryDef>
    <defName>FimirChildDirach</defName>
    <title>Dirach caste</title>
    <titleShort>Dirach</titleShort>
    <baseDescription>[PAWN_nameDef] born in the blessed caste of Dirachs. Strong and clever, born to aid the clan or rather the Meargh herself.</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Male</bodyTypeFemale>
    <slot>Childhood</slot>
    <skillGains>
      <li>
        <defName>Plants</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Intellectual</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Medicine</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Construction</defName>
        <amount>-3</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>Mining</li>
    </workDisables>
    <spawnCategories>
      <li>FimirDirach</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

</Defs>
