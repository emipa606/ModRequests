<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Adulthood -->

  <AlienRace.BackstoryDef>
    <defName>MearghAdvisor</defName>
    <title>Advisor</title>
    <titleShort>Advisor</titleShort>
    <baseDescription>[PAWN_nameDef] choose to serve another Meargh. Therefore foregoing [PAWN_pronoun] rights to rule.</baseDescription>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <skillGains>
      <li>
        <defName>Shooting</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Social</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Plants</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Medicine</defName>
        <amount>4</amount>
      </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirMeargh</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>MearghHermit</defName>
    <title>Hermit</title>
    <titleShort>Hermit</titleShort>
    <baseDescription>[PAWN_nameDef] tends to spend alot of time away from the common rabble of the clan, studiyng various things.</baseDescription>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <skillGains>
    <li>
      <defName>Shooting</defName>
      <amount>5</amount>
    </li>
    <li>
      <defName>Intellectual</defName>
      <amount>3</amount>
    </li>
    <li>
      <defName>Plants</defName>
      <amount>5</amount>
    </li>
    <li>
      <defName>Medicine</defName>
      <amount>5</amount>
    </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>MearghWarrior</defName>
    <title>Warrior</title>
    <titleShort>Warrior</titleShort>
    <baseDescription>[PAWN_nameDef] likes to join the fray of the raids proving [PAWN_possessive] strength.</baseDescription>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <skillGains>
    <li>
      <defName>Melee</defName>
      <amount>8</amount>
    </li>
    <li>
      <defName>Shooting</defName>
      <amount>8</amount>
    </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>MearghLeader</defName>
    <title>Charismatic</title>
    <titleShort>Charismatic</titleShort>
    <baseDescription>[PAWN_nameDef] is charismatic and devious. Even other races find a certain charm in [PAWN_objective].</baseDescription>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <skillGains>
    <li>
      <defName>Social</defName>
      <amount>7</amount>
    </li>
    <li>
      <defName>Intellectual</defName>
      <amount>4</amount>
    </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>


  <!-- Childhood -->

  <AlienRace.BackstoryDef>
    <defName>FimirChildMeargh</defName>
    <title>Meargh caste</title>
    <titleShort>Meargh</titleShort>
    <baseDescription>Born as a rarity [PAWN_nameDef], a female Fimir. The highest caste of them all, born to rule or die competing for it.</baseDescription>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Childhood</slot>
    <skillGains>
      <li>
        <defName>Plants</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Intellectual</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Medicine</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>5</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>Mining</li>
      <li>ManualDumb</li>
    </workDisables>
    <spawnCategories>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

</Defs>
