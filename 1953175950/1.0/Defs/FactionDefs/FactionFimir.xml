<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
    <defName>FimirFaction</defName>
    <label>Fimir Clans</label>
    <description>Fimir clans, the feared boogeyman of the bog. Even if they are of a hostile nature, they can agree to reluctantly trade with more trusted peers.</description>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <fixedName>Fimir Clans</fixedName>
    <startingGoodwill>
      <min>-100</min>
      <max>-100</max>
    </startingGoodwill>
    <naturalColonyGoodwill>
      <min>-100</min>
      <max>-100</max>
    </naturalColonyGoodwill>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <backstoryCategories>
      <li>FimirShearl</li>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
      <li>FimirFimm</li>
      <li>FimirFimmNoble</li>
      <li>FimirFimmGuard</li>
      <li>FimirDirach</li>
    </backstoryCategories>
    <hairTags>
      <li>Rural</li>
      <li>Punk</li>
      <li>Tribal</li>
    </hairTags>
    <settlementNameMaker>NamerFimirBase</settlementNameMaker>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <humanlikeFaction>true</humanlikeFaction>
    <techLevel>Medieval</techLevel>
    <homeIconPath>Things/World/FimirIcon</homeIconPath>
    <colorSpectrum>
      <li>(1, 1.0, 1.0)</li>
    </colorSpectrum>
    <expandingIconTexture>Things/World/FimirIcon</expandingIconTexture>
    <allowedArrivalTemperatureRange>
      <min>-20</min>
      <max>40</max>
    </allowedArrivalTemperatureRange>
    <caravanTraderKinds>
      <li>Caravan_Fimir_BulkGoods</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Fimir_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Fimir_Standard</li>
    </baseTraderKinds>
    <pawnGroupMakers>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <ShearlLow>20</ShearlLow>
          <ShearlMid>18</ShearlMid>
          <FimmLow>12</FimmLow>
          <FimmMid>10</FimmMid>
          <FimmHigh>5</FimmHigh>
          <DirachMid>5</DirachMid>
          <MearghLow>1</MearghLow>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <DirachMid>1</DirachMid>
        </traders>
        <carriers>
          <Muffalo>3</Muffalo>
        </carriers>
        <guards>
          <ShearlLow>20</ShearlLow>
          <ShearlMid>18</ShearlMid>
          <FimmLow>12</FimmLow>
          <FimmMid>10</FimmMid>
          <FimmHigh>5</FimmHigh>
          <DirachMid>5</DirachMid>
          <MearghLow>1</MearghLow>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <ShearlLow>20</ShearlLow>
          <ShearlMid>18</ShearlMid>
          <FimmLow>12</FimmLow>
          <FimmMid>10</FimmMid>
          <FimmHousecarl>10</FimmHousecarl>
          <DirachMid>5</DirachMid>
          <MearghLow>2</MearghLow>
          <MearghHigh>1</MearghHigh>
        </options>
      </li>
      <li>
        <!-- Normal fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <ShearlLow>20</ShearlLow>
          <ShearlMid>18</ShearlMid>
          <FimmLow>12</FimmLow>
          <FimmMid>10</FimmMid>
          <FimmHigh>5</FimmHigh>
          <DirachMid>5</DirachMid>
          <MearghLow>1</MearghLow>
        </options>
      </li>
      <li>
        <!-- High tier fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>50</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <ShearlLow>20</ShearlLow>
          <ShearlMid>18</ShearlMid>
          <FimmLow>10</FimmLow>
          <FimmMid>15</FimmMid>
          <FimmHigh>10</FimmHigh>
          <DirachMid>6</DirachMid>
          <MearghLow>1</MearghLow>
          <MearghHigh>1</MearghHigh>
        </options>
      </li>
      <li>
        <!-- Normal fights, melee-only -->
        <kindDef>Combat</kindDef>
        <commonality>30</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <ShearlLow>20</ShearlLow>
          <ShearlMid>18</ShearlMid>
          <FimmLow>12</FimmLow>
          <FimmMid>10</FimmMid>
          <FimmHigh>5</FimmHigh>
        </options>
      </li>
      <li>
        <!-- Normal fights, ranged and thralls -->
        <kindDef>Combat</kindDef>
        <commonality>20</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <ShearlLow>20</ShearlLow>
          <ShearlMid>18</ShearlMid>
          <FimmLow>12</FimmLow>
          <FimmMid>10</FimmMid>
          <DirachMid>5</DirachMid>
        </options>
      </li>

      <li>
        <!-- Thralls -->
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <ShearlLow>20</ShearlLow>
          <ShearlMid>18</ShearlMid>
          <FimmLow>12</FimmLow>
          <FimmMid>10</FimmMid>
          <DirachMid>2</DirachMid>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>

</Defs>
