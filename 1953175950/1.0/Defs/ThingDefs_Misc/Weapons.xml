  <ThingDef ParentName="BaseFimirMakeableGun">
    <defName>FimirWitheringStaff</defName>
    <label>withering staff</label>
    <description>A staff for a Meargh or Dirach to unleash deadly and crippling blasts.</description>
    <graphicData>
      <texPath>Things/Weapon/FimirWitheringStaff/FimirWitheringStaff</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>FimirMearghWithering</researchPrerequisite>
      <skillRequirements>
        <Crafting>0</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.7</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.6</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <WoodLog>75</WoodLog>
      <Jade>50</Jade>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_FimirWithering</defaultProjectile>
        <warmupTime>3.5</warmupTime>
        <range>30.9</range>
        <forcedMissRadius>2.4</forcedMissRadius>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <weaponTags>
      <li>DirachMid</li>
      <li>MearghMid</li>
    </weaponTags>
    <tools>
      <li>
        <label>staff</label>
        <capacities>
          <li>FimirWitherBlunt</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
