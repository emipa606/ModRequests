<Defs>

  <!-- Adulthood -->

  <AlienRace.BackstoryDef>
    <defName>ShearlHandy</defName>
    <title>Handyman</title>
    <titleShort>Jack-of-all</titleShort>
    <baseDescription>[PAWN_nameDef] has proved [PAWN_possessive] worth to the clan. Not a mastersmith but a jack of all trades, able to help where help is due.</baseDescription>
    <skillGains>
      <li>
        <defName>Crafting</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Cooking</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Plants</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Construction</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Mining</defName>
        <amount>1</amount>
      </li>
      <li>
        <defName>Animals</defName>
        <amount>1</amount>
      </li>
    </skillGains>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Male</bodyTypeFemale>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirShearl</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>ShearlCrafter</defName>
