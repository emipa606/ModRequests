<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <FactionDef>
		<defName>FimirPlayerFaction</defName>
		<label>Fimir clan</label>
    <description>A Fimir clan.</description>
    <isPlayer>true</isPlayer>
    <pawnSingular>clan member</pawnSingular>
    <pawnsPlural>clan members</pawnsPlural>
    <backstoryFilters>
      <li>
        <categories>
          <li>FimirShearl</li>
          <li>FimirMeargh</li>
          <li>FimirMearghLeader</li>
          <li>FimirFimm</li>
          <li>FimirFimmNoble</li>
          <li>FimirFimmGuard</li>
          <li>FimirDirach</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>Things/World/FimirIconSecond</factionIconPath>
    <settlementTexturePath>World/WorldObjects/Expanding/Town</settlementTexturePath>
    <colorSpectrum>
      <li>(1, 1.0, 1.0)</li>
    </colorSpectrum>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <techLevel>Medieval</techLevel>
    <allowedCultures><li>KTFimirCulture</li></allowedCultures>
    <requiredMemes>
