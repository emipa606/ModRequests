<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Adulthood -->

  <AlienRace.BackstoryDef>
    <defName>FimmScout</defName>
    <title>Bog Scout</title>
    <titleShort>Scout</titleShort>
    <baseDescription>[PAWN_nameDef] wanders the bog and woods of the lands. Occasionally ambushing and kidnapping travelers, but otherwise forage useful plants.</baseDescription>
    <bodyTypeMale>Fat</bodyTypeMale>
    <bodyTypeFemale>Fat</bodyTypeFemale>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Plants</defName>
        <amount>4</amount>
      </li>
      <li>
        <defName>Animals</defName>
        <amount>3</amount>
      </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirFimm</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>FimmHouse</defName>
    <title>Housecarl</title>
    <titleShort>Housecarl</titleShort>
    <baseDescription>[PAWN_nameDef] is a high standing defender of the clanhold.</baseDescription>
    <bodyTypeMale>Fat</bodyTypeMale>
    <bodyTypeFemale>Fat</bodyTypeFemale>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>6</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>5</amount>
      </li>
      <li>
        <defName>Social</defName>
        <amount>5</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>ManualSkilled</li>
    </workDisables>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirFimmGuard</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>FimmClan</defName>
    <title>Clansman</title>
    <titleShort>Clansman</titleShort>
    <baseDescription>[PAWN_nameDef] spends most time at the surrounding area of the clanhold. As [PAWN_nameDef] tends to stay at the hold, [PAWN_pronoun] is more adapt at doing other duties aswell.</baseDescription>
    <bodyTypeMale>Fat</bodyTypeMale>
    <bodyTypeFemale>Fat</bodyTypeFemale>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Construction</defName>
        <amount>4</amount>
      </li>
      <li>
        <defName>Animals</defName>
        <amount>3</amount>
      </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirFimm</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>FimmFighter</defName>
    <title>Bog Demon</title>
    <titleShort>Demon</titleShort>
    <baseDescription>[PAWN_nameDef] is often far away from the holds, terrorizing nearby villages. [PAWN_nameDef] is the embodiment of the bog demon that haunts the outskirts, murdering and kidnapping those who stray at dawn and dusk.</baseDescription>
    <bodyTypeMale>Fat</bodyTypeMale>
    <bodyTypeFemale>Fat</bodyTypeFemale>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>4</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>2</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>Artistic</li>
    </workDisables>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirFimm</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <AlienRace.BackstoryDef>
    <defName>FimmWarrior</defName>
    <title>Warrior</title>
    <titleShort>Warrior</titleShort>
    <baseDescription>[PAWN_nameDef] is a true warrior. [PAWN_possessive] only concern is to fight for the hold and clan.</baseDescription>
    <bodyTypeMale>Fat</bodyTypeMale>
    <bodyTypeFemale>Fat</bodyTypeFemale>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>6</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>5</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>ManualSkilled</li>
      <li>Artistic</li>
    </workDisables>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirFimm</li>
      <li>FimirFimmNoble</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

  <!-- Childhood -->

  <AlienRace.BackstoryDef>
    <defName>FimirChildFimm</defName>
    <title>Fimm caste</title>
    <titleShort>Fimm</titleShort>
    <baseDescription>[PAWN_nameDef] born in the warrior caste. Strong and bulky fighters with the duty to fight and protect the clans.</baseDescription>
    <bodyTypeMale>Fat</bodyTypeMale>
    <bodyTypeFemale>Fat</bodyTypeFemale>
    <slot>Childhood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Crafting</defName>
        <amount>-3</amount>
      </li>
      <li>
        <defName>Social</defName>
        <amount>-3</amount>
      </li>
    </skillGains>
    <workDisables>
      <li>Intellectual</li>
    </workDisables>
    <spawnCategories>
      <li>FimirFimm</li>
      <li>FimirFimmGuard</li>
      <li>FimirFimmNoble</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>

</Defs>
