<?xml version="1.0" encoding="utf-8"?>
<Defs>  
  <ThingDef Class="CaravanCooler.ThingDef_CaravanCooler">
    <defName>CaravanCooler</defName>
    <label>caravan cooler</label>
    <description>A portable cooler to load into a caravan that keeps perishable food items refrigerated.</description>
    <thingClass>CaravanCooler.Thing_CaravanCooler</thingClass>

    <alwaysHaulable>true</alwaysHaulable>
    <category>Item</category>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>1</stackLimit>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
    
    <graphicData>
      <texPath>Things/Cooler</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    
    <statBases>
      <MarketValue>20</MarketValue>
      <Mass>20.0</Mass>
      <DeteriorationRate>2.0</DeteriorationRate>
      <Flammability>0.3</Flammability>
    </statBases>
    
    <recipeMaker>
      <researchPrerequisite>CaravanCooler</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>800</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    
  </ThingDef>
</Defs>