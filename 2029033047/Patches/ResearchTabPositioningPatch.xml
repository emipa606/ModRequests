<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Machining -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="Machining"]/researchViewX</xpath>
    <value>
      <researchViewX>6.00</researchViewX>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="Machining"]/researchViewY</xpath>
    <value>      
      <researchViewY>4.10</researchViewY>
    </value>
  </Operation>

  <!-- PassiveCooler -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="PassiveCooler"]/researchViewX</xpath>
    <value>
      <researchViewX>1.00</researchViewX>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="PassiveCooler"]/researchViewY</xpath>
    <value>
      <researchViewY>3.50</researchViewY>
    </value>
  </Operation>

  <!-- Stonecutting -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="Stonecutting"]/researchViewX</xpath>
    <value>
      <researchViewX>0.00</researchViewX>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="Stonecutting"]/researchViewY</xpath>
    <value>
      <researchViewY>2.10</researchViewY>
    </value>
  </Operation>

  <!-- ComplexFurniture -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="ComplexFurniture"]/researchViewX</xpath>
    <value>
      <researchViewX>0.00</researchViewX>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="ComplexFurniture"]/researchViewY</xpath>
    <value>
      <researchViewY>4.20</researchViewY>
    </value>
  </Operation>

  <!-- Smithing -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="Smithing"]/researchViewX</xpath>
    <value>
      <researchViewX>1.00</researchViewX>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="Smithing"]/researchViewY</xpath>
    <value>
      <researchViewY>4.20</researchViewY>
    </value>
  </Operation>

  <!-- Royalty DLC -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Royalty</li>
    </mods>

    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>

        <!-- Harp -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ResearchProjectDef[defName="Harp"]/researchViewX</xpath>
          <value>
            <researchViewX>1.00</researchViewX>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ResearchProjectDef[defName="Harp"]/researchViewY</xpath>
          <value>
            <researchViewY>4.90</researchViewY>
          </value>
        </li>

        <!-- Harpsichord -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ResearchProjectDef[defName="Harpsichord"]/researchViewX</xpath>
          <value>
            <researchViewX>2.00</researchViewX>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ResearchProjectDef[defName="Harpsichord"]/researchViewY</xpath>
          <value>
            <researchViewY>4.90</researchViewY>
          </value>
        </li>

        <!-- Piano -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ResearchProjectDef[defName="Piano"]/researchViewX</xpath>
          <value>
            <researchViewX>3.00</researchViewX>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ResearchProjectDef[defName="Piano"]/researchViewY</xpath>
          <value>
            <researchViewY>4.90</researchViewY>
          </value>
        </li>

      </operations>
    </match>
  </Operation>

</Patch>