<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--The main research that unlocks the ability to build robots-->
  <ResearchProjectDef>
    <defName>BaseRobots</defName>
    <label>Unlock Base Robots</label>
    <description>Base robots allows player to create their own robots. Research this to start building them!</description>
    <!--Every robot technology should include the tab BaseRobots-->
    <tab>BaseRobots</tab>
    <baseCost>4000</baseCost>
    <!--For end tier robots change techLevel to Spacer-->
    <!--
		<techLevel>Spacer</techLevel>
		-->
    <techLevel>Industrial</techLevel>
    <unlockExtremeDifficulty>true</unlockExtremeDifficulty>
    <!--Every new robot should have BaseRobots as prerequisites this will be expanded on in future updates-->
    <prerequisites>
      <li>AdvancedFabrication</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <!--You should increase the values below so your research box doesn't overlap-->
    <researchViewX>1</researchViewX>
    <researchViewY>1</researchViewY>
  </ResearchProjectDef>
</Defs>