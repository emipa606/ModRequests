<?xml version="1.0" encoding="utf-8"?>


<Defs>

  <!-- Properties of part for robot-->

    <ThingDef ParentName="ResourceBase">

    <defName>RobotBattery</defName>

    <label>Robot Battery</label>

    <description>Robots need batteries right?</description>

    <graphicData>
      <texPath>Things/RobotParts/RobotBattery</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>

    <soundInteract>Metal_Drop</soundInteract>

    <soundDrop>Standard_Drop</soundDrop>

    <stackLimit>50</stackLimit>

    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>500</MarketValue>
      <Mass>1</Mass>
      <Flammability>5</Flammability>
      <DeteriorationRate>0.1</DeteriorationRate>
    </statBases>

    <intricate>true</intricate>

    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>

    <tickerType>Normal</tickerType>    

	<comps>
		<li Class="CompProperties_Explosive">
			<explosiveRadius>6</explosiveRadius>
			<explosiveDamageType>Bomb</explosiveDamageType>   
			<explosiveExpandPerStackcount>0.100</explosiveExpandPerStackcount>
			<startWickOnDamageTaken>Flame</startWickOnDamageTaken>
			<startWickHitPointsPercent>0.833</startWickHitPointsPercent>
			<preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
			<preExplosionSpawnChance>1</preExplosionSpawnChance>
			<wickTicks>
				<min>100</min>
				<max>150</max>
			</wickTicks>   
		</li>
	</comps>

    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>

  </ThingDef>

<!--Recipe to make part for robot.-->

  <RecipeDef>

    <defName>Make_RobotBattery</defName>

    <label>Make 10 Base Robot Batteries</label>

    <description>Make batteries for Base Robots.</description>

    <jobString>Mixing uranium and chemfuel together.</jobString>

    <workSpeedStat>SmithingSpeed</workSpeedStat>

    <effectWorking>Cook</effectWorking>

    <soundWorking>Recipe_Machining</soundWorking>

    <workAmount>2500</workAmount>

    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>

    <ingredients>

      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>

      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>   

       <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>

       <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>

    </ingredients>

    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentIndustrial</li>
        <li>Plasteel</li>
        <li>Uranium</li>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>

    <products>
      <RobotBattery>10</RobotBattery>
    </products>

	<!-- Deprecated -->
	<!--
    <recipeUsers>
      <li>TableMachining</li>
    </recipeUsers>
	-->

    <researchPrerequisite>BaseRobots</researchPrerequisite>

    <skillRequirements>
      <Crafting>10</Crafting>
      <Intellectual>10</Intellectual>
    </skillRequirements>

    <workSkill>Crafting</workSkill>

  </RecipeDef>

</Defs>