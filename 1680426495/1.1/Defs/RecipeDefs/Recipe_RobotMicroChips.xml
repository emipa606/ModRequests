<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Properties of part for robot-->
  <ThingDef ParentName="ResourceBase">
    <defName>RobotMicroChips</defName>
    <label>Robot Microchips</label>
    <description>Robots need these microchips to destroy all humans.</description>
    <graphicData>
      <texPath>Things/RobotParts/RobotMicroChips</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>25</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>1000</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>
  <!--Recipe to make part for robot.-->
  <RecipeDef>
    <defName>Make_RobotMicroChips</defName>
    <label>Make 5 Base Robot MicroChips</label>
    <description>Make microchips for Base Robots.</description>
    <jobString>Microchips tell the robots how to destroy all humans.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>4000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentSpacer</li>
        <li>Steel</li>
        <li>Gold</li>
        <li>Silver</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RobotMicroChips>5</RobotMicroChips>
    </products>
    <!--Deprecated-->
    <!--
    <recipeUsers>
      <li>TableMachining</li>
    </recipeUsers>
    -->
    <researchPrerequisite>BaseRobots</researchPrerequisite>
    <skillRequirements>
      <Crafting>10</Crafting>
      <Intellectual>10</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>
</Defs>