<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef ParentName="GeneHairColorBase">
    <defName>Hair_ThrumboWhite</defName>
    <label>thurmbo-white hair</label>
    <hairColorOverride>(220, 220, 220)</hairColorOverride>
    <selectionWeight>1</selectionWeight>
    <displayOrderInCategory>0</displayOrderInCategory>
    <randomBrightnessFactor>0</randomBrightnessFactor>
  </GeneDef>

  <GeneDef ParentName="GeneSkinColorOverride">
    <defName>Skin_ThrumboWhite</defName>
    <label>thurmbo-white skin</label>
    <description>Carriers of this gene produce a pigment that turns their skin a pale white color.</description>
    <skinColorOverride>(250, 250, 250)</skinColorOverride>
    <randomBrightnessFactor>0.10</randomBrightnessFactor>
    <displayOrderInCategory>0</displayOrderInCategory>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>white</symbol></li>
        <li><symbol>pale</symbol></li>
        <li><symbol>snow</symbol></li>
        <li><symbol>glow</symbol></li>
        <li><symbol>shine</symbol></li>
        <li><symbol>ala</symbol></li>
        <li><symbol>bleach</symbol></li>
        <li><symbol>pearl</symbol></li>
        <li><symbol>frost</symbol></li>
        <li><symbol>ice</symbol></li>
        <li><symbol>milk</symbol></li>
        <li><symbol>chalk</symbol></li>
        <li><symbol>salt</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>ghost</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

  <GeneDef ParentName="GeneHeadboneBase">
    <defName>Headbone_ThrumboianHorn</defName>
    <label>thrumboian horn</label>
    <description>Carriers of this gene grow a Thrumbo horn.</description>
    <iconPath>UI/GeneIcons/Gene_HeadboneThrumoianHorn</iconPath>
    <graphicData>
      <graphicPath>Pawn/ThrumboianHorn/ThrumboianHorn</graphicPath>
      <color>(255, 255, 255)</color>
      <layer>PostHeadgear</layer>
    </graphicData>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>horn</symbol></li>
        <li><symbol>knob</symbol></li>
        <li><symbol>spike</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>horn</symbol></li>
        <li><symbol>spike</symbol></li>
        <li><symbol>vil</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

  <GeneDef>
    <defName>ThrumboianFury</defName>
    <label>thrumboian fury</label>
    <description>Carriers of this gene can trigger Thrumboian fury.</description>
    <iconPath>UI/Icons/Genes/Gene_HyperAggressive</iconPath>
    <displayCategory>Ability</displayCategory>
    <abilities>
      <li>ThrumboianFury</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>ThrumboianFury</AbilityDef>
    </descriptionHyperlinks>
    <biostatMet>3</biostatMet>
    <biostatCpx>1</biostatCpx>
    <symbolPack>
      <suffixSymbols>
        <li><symbol>fury</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

</Defs>
