<Patch>
     <!-- Patch the base storyteller to grow the colony more aggressively, but leave the population "cap" at the vanilla value of 20 -->
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/StorytellerDef[@Name="BaseStoryteller"]/populationIntentFactorFromPopCurve/points</xpath>
        <value>
            <points>
                <li>0,  8.0</li>
                <li>8,  2.0</li>
                <li>12,  1.0</li>
                <li>16,  0.35</li>
                <li>18, 0.0</li>
                <li>20,-1.0</li>
              </points>
        </value>
    </Operation>
</Patch>
    