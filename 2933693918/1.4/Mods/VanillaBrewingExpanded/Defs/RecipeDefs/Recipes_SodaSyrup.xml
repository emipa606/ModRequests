<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef>
        <defName>HC_MakeBloodSodaSyrup</defName>
        <label>make hemogen soda syrup</label>
        <description>Make hemogen soda syrup by mixing hemogen with high fructose corn syrup.</description>
        <jobString>Making hemogen soda syrup.</jobString>
        <workSpeedStat>DrugCookingSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Brewing</soundWorking>
        <workSkill>Cooking</workSkill>
        <workAmount>1000</workAmount>
        <allowMixingIngredients>true</allowMixingIngredients>
        <recipeUsers>
            <li>Brewery</li>
            <li>VBE_Bar</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>HemogenPack</li>
                        <li MayRequire="eth0net.AnimalHemogen">AnimalHemogenPack</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>RawCorn</li>
                    </thingDefs>
                </filter>
                <count>30</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>HemogenPack</li>
                <li>RawCorn</li>
                <li MayRequire="eth0net.AnimalHemogen">AnimalHemogenPack</li>
            </thingDefs>
        </fixedIngredientFilter>
        <defaultIngredientFilter>
            <thingDefs>
                <li>HemogenPack</li>
                <li>RawCorn</li>
                <li MayRequire="eth0net.AnimalHemogen">AnimalHemogenPack</li>
            </thingDefs>
        </defaultIngredientFilter>
        <products>
            <HC_BloodSodaSyrup>20</HC_BloodSodaSyrup>
        </products>
        <skillRequirements>
            <Cooking>4</Cooking>
        </skillRequirements>
        <researchPrerequisite>VBE_MixologyResearch</researchPrerequisite>
    </RecipeDef>

