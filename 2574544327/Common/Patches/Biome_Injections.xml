<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<!-- Hainan Hares -->
	
	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>
					/Defs/BiomeDef[defName = "TemperateForest"]/wildAnimals
				</xpath>
				<value>
					<HotR_Hare_Hainan>0.5</HotR_Hare_Hainan>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>
					/Defs/BiomeDef[defName = "TropicalRainforest"]/wildAnimals
				</xpath>
				<value>
					<HotR_Hare_Hainan>0.03</HotR_Hare_Hainan>
				</value>
			</li>
			
		</operations>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biomes! Bunnies</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				/Defs/BiomeDef[defName = "Bunnies_Carrotopia"]/wildAnimals
			</xpath>
			<value>
				<HotR_Hare_Hainan>1</HotR_Hare_Hainan>
			</value>
		</match>
	</Operation>
	
