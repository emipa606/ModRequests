<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef  ParentName="DiseaseBase">
    <defName>Dormancy</defName>

    <label>休眠</label>
    <description>小的食物需求和精神需求会停止</description>
    <lethalSeverity>1</lethalSeverity>
    <scenarioCanAdd>true</scenarioCanAdd>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>30000~60000</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_RecoveryThought">
        <thought>Catharsis</thought>
      </li>
    </comps>
    <stages>
      <li>
        <hungerRateFactorOffset>-1</hungerRateFactorOffset>
        
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    
    
    
  </HediffDef>
</Defs>