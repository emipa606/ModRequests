<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <ThingDef ParentName="ResourceBase">
    <defName>PolarBearskin</defName>
    <label>polar bear skin</label>
    <description>The skin of a polar bear. Used to make rugs.</description>
    <graphicData>
      <texPath>Things/AreaRugs/VanillaPolarBear4X4</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.75</drawSize>
    </graphicData>
    <statBases>
      <Mass>2</Mass>
      <Flammability>1.4</Flammability>
    </statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <stuffProps>
      <color>(180,173,150)</color>
      <commonality>0.05</commonality>
      <statOffsets>
        <Beauty>6</Beauty>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>0.7</MaxHitPoints>
        <Beauty>2</Beauty>
      </statFactors>
    </stuffProps>
  </ThingDef>

