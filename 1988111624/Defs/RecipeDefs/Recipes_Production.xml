    <workAmount>500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
      <li>TableRugMaking</li>
    </recipeUsers>
	<ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PolarBearskin</li>
            <li>Bearskin</li>
            <li>ThrumboSkin</li>
            <li>MegaslothSkin</li>
            <li>MuffaloSkin</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
            <li>PolarBearskin</li>
            <li>Bearskin</li>
            <li>ThrumboSkin</li>
            <li>MegaslothSkin</li>
            <li>MuffaloSkin</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Leather_Patch>40</Leather_Patch>
    </products>
  </RecipeDef>
  
    <!-- ==== Make Patchleather from Skin End ==== -->


</Defs>