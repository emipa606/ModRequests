<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ==== Remove Thrumbo Horn Start ==== -->
	
	<RecipeDef>
    <defName>RemoveThrumboHorn</defName>
    <label>Remove the horn from a Thrumbo Skin.</label>
    <description>Remove the horn from a Thrumbo Skin.</description>
    <jobString>Removing Thrumbo horn</jobString>
    <workAmount>1000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
      <li>TableRugMaking</li>
    </recipeUsers>
	<ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ThrumboSkin</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ThrumboSkin</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ThrumboHorn>1</ThrumboHorn>
    </products>
  </RecipeDef>
  
    <!-- ==== Remove Thrumbo Horn End ==== -->
	
    <!-- ==== Make Patchleather from Skin Start ==== -->
	
	<RecipeDef>
    <defName>Patchleatherfromskin</defName>
