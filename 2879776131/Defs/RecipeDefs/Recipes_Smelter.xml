<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef Name="RecipeOmniMatterBase" Abstract="True">
		<description>Smelt raw materials into OmniMatter.</description>
		<jobString>Smelting raw materials into OmniMatter</jobString>	
		<label>Smelt OmniMatter</label>
		<workAmount>2000</workAmount>	
		<targetCountAdjustment>10</targetCountAdjustment>	
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<effectWorking>Smelt</effectWorking>
		<allowMixingIngredients>false</allowMixingIngredients>	
		<soundWorking>Recipe_Smelt</soundWorking>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>Steel</li>
			<li>Gold</li>
			<li>Uranium</li>
			<li>Luciferium</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>	
	</RecipeDef>

 	<RecipeDef ParentName="RecipeOmniMatterBase">
		<defName>MakeOmniMatter</defName>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>Steel</li>
			  </thingDefs>
			</filter>
			<count>10</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>Gold</li>
			  </thingDefs>
			</filter>
			<count>1</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>Uranium</li>
			  </thingDefs>
			</filter>
			<count>10</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>Luciferium</li>
			  </thingDefs>
			</filter>
			<count>10</count>
		  </li>
		</ingredients>
		<products>
			<OmniMatter>10</OmniMatter>
		</products>		
	</RecipeDef> 

