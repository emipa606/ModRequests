<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="RockBase">
    <defName>MineableOmniMatter</defName>
    <label>compressed omnimatter</label>
    <description>Rock containing pieces of OmniMatter.  Remnants of an advanced prior civilization that appears to have ended badly.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(200,200,200)</color>
      <colorTwo>(11,51,229)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>3700</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>OmniMatter</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.01</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>15~20</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

  <ThingDef ParentName="RockBase">
    <defName>MineableOmniWeave</defName>
    <label>compacted omniweave</label>
    <description>Rock containing pieces of OmniWeave.  Remnants of an advanced prior civilization that appears to have ended badly.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <colorTwo>(200,200,200)</colorTwo>
      <color>(87,40,19)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>3200</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>OmniWeave</mineableThing>
      <mineableYield>60</mineableYield>
      <mineableScatterCommonality>0.01</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>15~20</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
  
</Defs>
