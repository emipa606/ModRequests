<?xml version="1.0" encoding="utf-8" ?>
<Defs> 

	<ThingDef ParentName="ResourceBase">
		<defName>OmniMatter</defName>
		<label>OmniMatter</label>
		<description>An immeasurably strong and adaptable material created by fusing multiple materials using luciferium nanites.</description>
		<graphicData>
			<texPath>Things/Item/Resource/OmniMatter</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<color>(200,200,200)</color>
		</graphicData>
		<resourceReadoutPriority>First</resourceReadoutPriority>
		<soundInteract>Silver_Drop</soundInteract>
		<soundDrop>Silver_Drop</soundDrop>
		<useHitPoints>false</useHitPoints>
		<resourceReadoutAlwaysShow>true</resourceReadoutAlwaysShow>
		<statBases>
			<MarketValue>250</MarketValue>
			<Mass>1</Mass>
			<StuffPower_Armor_Sharp>8</StuffPower_Armor_Sharp>
			<StuffPower_Armor_Blunt>7</StuffPower_Armor_Blunt>
			<StuffPower_Armor_Heat>8.5</StuffPower_Armor_Heat>
			<StuffPower_Insulation_Cold>40</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>40</StuffPower_Insulation_Heat>
			<SharpDamageMultiplier>8</SharpDamageMultiplier>
			<BluntDamageMultiplier>8.5</BluntDamageMultiplier>
			<MaxHitPoints>99</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<stuffProps>
			<stuffAdjective>OmniMatter</stuffAdjective>
			<categories>
				<li>Metallic</li>
				<li>Stony</li>
			</categories>
			<commonality>0.001</commonality>
			<color>(200,200,200)</color>
			<allowColorGenerators>true</allowColorGenerators>
			<constructEffect>ConstructMetal</constructEffect>
			<soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
			<soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
			<soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
			<statOffsets>
				<Beauty>600</Beauty>
			</statOffsets>
			<statFactors>
				<MaxHitPoints>1000</MaxHitPoints>
				<Flammability>0.0</Flammability>
				<Beauty>40</Beauty>
				<DoorOpenSpeed>3</DoorOpenSpeed>
				<BedRestEffectiveness>1.5</BedRestEffectiveness>
				<MeleeWeapon_CooldownMultiplier>0.3</MeleeWeapon_CooldownMultiplier>
			</statFactors>
		</stuffProps>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<tradeTags>
		  <li>ExoticMisc</li>
		</tradeTags>
		<comps>
			<li>
				<compClass>CompColorable</compClass>
			</li>
		</comps>
