      </weaponClasses>
      <tools>
        <li>
          <label>bayonet</label>
          <capacities>
            <li>Cut</li>
          </capacities>
          <power>15</power>
          <cooldownTime>2.6</cooldownTime>
        </li>
      </tools>
      <relicChance>0</relicChance>
    </ThingDef>
  
    <ThingDef ParentName="Gun_QuantumPistolBase">
      <defName>DV_Gun_QuantumPistol</defName>
      <destroyOnDrop>true</destroyOnDrop>
