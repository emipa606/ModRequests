<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <RecipeDef>
    <defName>MakeFlares</defName>
    <label>Bundle flares</label>
    <description>Alone, they are just pieces of wood, but together they make a mighty faggot!</description>
    <jobString>Bundling Flares.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <skillRequirements>
      <Crafting>1</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>	  
    </ingredients>
    <products>
      <AdventureFlares>1</AdventureFlares>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
		<li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
	<defaultIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
		<li>Steel</li>
      </thingDefs>
    </defaultIngredientFilter>
  </RecipeDef>
  
