<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef>
		<defName>Spawner_GethTrooperSoldier</defName>
		<label>Geth Trooper Soldier</label>
		<description>Creates a geth trooper soldier.</description>
		<thingClass>ThingWithComps</thingClass>
		<graphicData>
			<texPath>Things/Item/Icon/GethSoldierRecipe</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>500</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0.1</Flammability>
		</statBases>
		<comps>
			<li Class="PawnExtensions.CompProperties_PawnSpawner">
				<spawnablePawnKinds>
					<li>GethTrooperPlayer</li>
				</spawnablePawnKinds>
				<needsActivation>False</needsActivation>
				<bodyType>GethInfiltrator</bodyType>
				<childStory>Geth_TSChild</childStory>
				<adultStory>Geth_TS</adultStory>
				<forceSkills>
					<li>
						<key>Shooting</key>
						<value>4~6</value>
					</li>
					<li>
						<key>Melee</key>
						<value>4~6</value>
					</li>
					<li>
						<key>Medicine</key>
						<value>0~5</value>
					</li>
				</forceSkills>
			</li>
		</comps>
		<size>(1,1)</size>
		<category>Building</category>
		<pathCost>200</pathCost>
		<passability>Standable</passability>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleRock</filthLeaving>
		<hasInteractionCell>false</hasInteractionCell>
		<drawerType>MapMeshAndRealTime</drawerType>
		<altitudeLayer>Building</altitudeLayer>
		<repairEffect>Repair</repairEffect>
		<useHitPoints>True</useHitPoints>
		<selectable>true</selectable>
		<surfaceType>Item</surfaceType>
		<tickerType>Normal</tickerType>
	</ThingDef>
	<RecipeDef>
		<defName>Craft_GethTrooperSoldier</defName>
		<label>make geth trooper soldier</label>
		<description>Create a geth trooper soldier, specialized for combat.</description>
		<jobString>Making geth trooper soldier.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workAmount>6000</workAmount>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>GethLeg</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>GethArm</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>GethHead</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>GethAntenna</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>GethPowerCell</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>GethTorso</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>GethLeg</li>
				<li>GethArm</li>
				<li>GethHead</li>
				<li>GethAntenna</li>
				<li>GethPowerCell</li>
				<li>GethTorso</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Spawner_GethTrooperSoldier>1</Spawner_GethTrooperSoldier>
		</products>
		<researchPrerequisite>Crafted_Geth_Platforms</researchPrerequisite>
		<recipeUsers>
			<li>Geth_Workbench</li>
		</recipeUsers>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
</Defs>