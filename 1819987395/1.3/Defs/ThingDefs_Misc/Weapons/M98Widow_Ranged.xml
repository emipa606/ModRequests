<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================= Widow Bullet ==================================== -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_Widow</defName>
		<label>bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>32</damageAmountBase>
			<armorPenetrationBase>0.40</armorPenetrationBase>
			<stoppingPower>3</stoppingPower>
			<speed>100</speed>
		</projectile>
	</ThingDef>
	<!-- ================================= M-98 Widow Weapon ==================================== -->
	<ThingDef ParentName="BaseHumanMakeableGun" Name="BaseGethWidow">
		<defName>Gun_M98Widow</defName>
		<label>M-98 Widow</label>
		<description>Several research firms spent a considerable fortune trying to redesign the Widow sniper rifle. Their goal was to retain the geth weapon's considerable firepower while reducing its recoil, so that the gun could be fired without breaking a nonsynthetic's arm. After much trial and error, one company finally produced a usable model rolled out to the galactic market.</description>
		<graphicData>
			<texPath>WeaponRanged/M98Widow</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.4</uiIconScale>
		<soundInteract>Interact_Rifle</soundInteract>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
			<li>RewardStandardLowFreq</li>
		</thingSetMakerTags>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<MarketValue>4000</MarketValue>
			<Mass>1.4</Mass>
			<AccuracyTouch>0.85</AccuracyTouch>
			<AccuracyShort>0.85</AccuracyShort>
			<AccuracyMedium>0.85</AccuracyMedium>
			<AccuracyLong>0.95</AccuracyLong>
			<RangedWeapon_Cooldown>3.1</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>GethM98Widow</li>
		</weaponTags>
		<weaponClasses>
			<li>RangedLight</li>
		</weaponClasses>
		<tradeability>Sellable</tradeability>
		<tradeTags>
			<li>ExoticMisc</li>
		</tradeTags>
			<recipeMaker>
				<researchPrerequisite>JavelinTechnology</researchPrerequisite>
				<skillRequirements>
					<Crafting>10</Crafting>
				</skillRequirements>
				<recipeUsers Inherit="False">
					<li>Geth_Workbench</li>
				</recipeUsers>
			</recipeMaker>
			<costList>
				<Plasteel>70</Plasteel>
				<ComponentSpacer>2</ComponentSpacer>
			</costList>
			<techLevel>Spacer</techLevel>
			<destroyOnDrop>false</destroyOnDrop>
			<verbs>
				<li>
					<verbClass>Verb_Shoot</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Bullet_Widow</defaultProjectile>
					<warmupTime>1.0</warmupTime>
					<range>31</range>
					<soundCast>Shot_M98Widow</soundCast>
					<soundCastTail>GunTail_Heavy</soundCastTail>
					<muzzleFlashScale>9</muzzleFlashScale>
				</li>
			</verbs>
			<tools>
				<li>
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
						<li>Poke</li>
					</capacities>
					<power>12</power>
					<cooldownTime>2</cooldownTime>
				</li>
			</tools>
		</ThingDef>
	</Defs>