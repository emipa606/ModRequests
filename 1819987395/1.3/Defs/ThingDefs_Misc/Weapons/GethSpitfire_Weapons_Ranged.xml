<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================= Spitfire Bullet ==================================== -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_Spitfire</defName>
		<label>superconducting toroids</label>
		<graphicData>
			<texPath>Projectile/JavelinProjectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<armorPenetrationBase>0.30</armorPenetrationBase>
			<stoppingPower>1</stoppingPower>
			<speed>80</speed>
		</projectile>
	</ThingDef>
	<!-- ================================= Spitfire Weapon ==================================== -->
	<ThingDef ParentName="BaseHumanMakeableGun" Name="BaseGethSpitfire">
		<defName>Gun_GethSpitfire</defName>
		<label>Spitfire</label>
		<description>Like the geth plasma shotgun, the Spitfire is not a true energy weapon. Instead, the minigun magnetically flings clusters of superconducting toroids. These donut-shaped projectiles are designed to shatter upon impact, arcing electricity between the fragments and flash-converting them to plasma. The gun's punishing, automatic blasts impact with the heat of a cutting torch.</description>
		<graphicData>
			<texPath>WeaponRanged/GethSpitfire</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.4</uiIconScale>
		<soundInteract>Interact_ChargeRifle</soundInteract>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<statBases>
			<WorkToMake>70000</WorkToMake>
			<MarketValue>1400</MarketValue>
			<Mass>12</Mass>
			<AccuracyTouch>0.15</AccuracyTouch>
			<AccuracyShort>0.25</AccuracyShort>
			<AccuracyMedium>0.25</AccuracyMedium>
			<AccuracyLong>0.15</AccuracyLong>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>150</Plasteel>
			<ComponentSpacer>4</ComponentSpacer>
		</costList>
		<recipeMaker>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
			<researchPrerequisite>SpitfireTechnology</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>Geth_Workbench</li>
			</recipeUsers>
		</recipeMaker>
		<weaponTags>
			<li>GethSpitfire</li>
		</weaponTags>
		<weaponClasses>
			<li>RangedHeavy</li>
		</weaponClasses>
		<tradeability>Sellable</tradeability>
		<techLevel>Spacer</techLevel>
		<destroyOnDrop>false</destroyOnDrop>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Spitfire</defaultProjectile>
				<warmupTime>2.5</warmupTime>
				<range>30.9</range>
				<ticksBetweenBurstShots>3</ticksBetweenBurstShots>
				<burstShotCount>30</burstShotCount>
				<soundCast>Shot_Spitfire</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>
</Defs>