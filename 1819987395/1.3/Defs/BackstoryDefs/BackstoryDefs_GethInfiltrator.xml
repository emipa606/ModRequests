<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Geth Infiltrator Child -->
	<AlienRace.BackstoryDef>
		<defName>Geth_InfiltratorChild</defName>
		<title>Geth</title>
		<titleShort>Geth</titleShort>
		<baseDescription>A humanoid race of networked AIs that were created by the quarians 300 years ago as tools of labor and war. Having since won their freedom from their creators, the geth have proven they are able to reason, analyze situations, and deploy tactics as well as any organic race so long as they remain networked with other geth.</baseDescription>
		<bodyTypeMale>Male</bodyTypeMale>
		<bodyTypeFemale>Female</bodyTypeFemale>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>GethInfiltratorBackstory</li>
		</spawnCategories>
		<forcedTraits>
			<li>
				<defName>GethNetworkedAI</defName>
			</li>
			<li>
				<defName>GethAimAccuracy</defName>
			</li>
			<li>
				<defName>GethNimble</defName>
			</li>
		</forcedTraits>
	</AlienRace.BackstoryDef>
	<!-- Geth Infiltrator Adult -->
	<AlienRace.BackstoryDef>
		<defName>Geth_Infiltrator</defName>
		<title>Geth Infiltrator</title>
		<titleShort>Infiltrator</titleShort>
		<baseDescription>Geth Infiltrators are a geth subtype, similar to hunters but designed for ranged combat.</baseDescription>
		<bodyTypeMale>GethInfiltrator</bodyTypeMale>
		<bodyTypeFemale>GethInfiltrator</bodyTypeFemale>
		<bodyTypeGlobal>GethInfiltrator</bodyTypeGlobal>
		<slot>Adulthood</slot>
		<skillGains>
			<li>
				<defName>Shooting</defName>
				<amount>10</amount>
			</li>
			<li>
				<defName>Melee</defName>
				<amount>4</amount>
			</li>
			<li>
				<defName>Intellectual</defName>
				<amount>6</amount>
			</li>
		</skillGains>
		<spawnCategories>
			<li>GethInfiltratorBackstory</li>
		</spawnCategories>
		<forcedTraits>
			<li>
				<defName>GethNetworkedAI</defName>
			</li>
			<li>
				<defName>GethAimAccuracy</defName>
			</li>
			<li>
				<defName>GethNimble</defName>
			</li>
		</forcedTraits>
	</AlienRace.BackstoryDef>
</Defs>