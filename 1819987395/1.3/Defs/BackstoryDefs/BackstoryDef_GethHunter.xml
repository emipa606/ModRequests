<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Geth Hunter Child -->
	<AlienRace.BackstoryDef>
		<defName>Geth_HunterChild</defName>
		<title>Geth</title>
		<titleShort>Geth</titleShort>
		<baseDescription>A humanoid race of networked AIs that were created by the quarians 300 years ago as tools of labor and war. Having since won their freedom from their creators, the geth have proven they are able to reason, analyze situations, and deploy tactics as well as any organic race so long as they remain networked with other geth.</baseDescription>
		<bodyTypeMale>Male</bodyTypeMale>
		<bodyTypeFemale>Female</bodyTypeFemale>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>GethHunterBackstory</li>
		</spawnCategories>
		<forcedTraits>
			<li>
				<defName>GethNetworkedAI</defName>
			</li>
			<li>
				<defName>GethNimble</defName>
			</li>
			<li>
				<defName>GethFastSpeed</defName>
			</li>
		</forcedTraits>
	</AlienRace.BackstoryDef>
	<!-- Geth Hunter Adult -->
	<AlienRace.BackstoryDef>
		<defName>Geth_Hunter</defName>
		<title>Geth Hunter</title>
		<titleShort>Hunter</titleShort>
		<baseDescription>Geth Hunters are a geth subtype, it's main specialty being to get in close and eliminate targets with their shotguns.</baseDescription>
		<bodyTypeMale>GethHunter</bodyTypeMale>
		<bodyTypeFemale>GethHunter</bodyTypeFemale>
		<bodyTypeGlobal>GethHunter</bodyTypeGlobal>
		<slot>Adulthood</slot>
		<skillGains>
			<li>
				<defName>Shooting</defName>
				<amount>6</amount>
			</li>
			<li>
				<defName>Construction</defName>
				<amount>3</amount>
			</li>
			<li>
				<defName>Crafting</defName>
				<amount>2</amount>
			</li>
			<li>
				<defName>Intellectual</defName>
				<amount>4</amount>
			</li>
		</skillGains>
		<spawnCategories>
			<li>GethHunterBackstory</li>
		</spawnCategories>
		<forcedTraits>
			<li>
				<defName>GethNetworkedAI</defName>
			</li>
			<li>
				<defName>GethNimble</defName>
			</li>
			<li>
				<defName>GethFastSpeed</defName>
			</li>
		</forcedTraits>
	</AlienRace.BackstoryDef>
</Defs>