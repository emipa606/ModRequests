<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--============================== Beds ==============================-->
	<ThingDef ParentName="BedWithQualityBase" Name="GethBed">
		<defName>GethPod</defName>
		<label>interface pod</label>
		<description>An interface pod used by geth to access the network. Acts as a bed useable only by geth.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/Bed/GethBed</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<rect>(0,0.05,1,1.95)</rect>
			</damageData>
		</graphicData>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>VitalsMonitor</li>
				</linkableFacilities>
			</li>
		</comps>
		<statBases>
			<MaxHitPoints>140</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>1</Beauty>
			<WorkToBuild>800</WorkToBuild>
			<Mass>30</Mass>
			<SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
		</statBases>
		<size>(1,2)</size>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>45</costStuffCount>
		<building>
			<bed_showSleeperBody>False</bed_showSleeperBody>
			<bed_healPerDay>8</bed_healPerDay>
		</building>
		<fillPercent>0.4</fillPercent>
		<pathCost>42</pathCost>
		<staticSunShadowHeight>0.17</staticSunShadowHeight>
		<castEdgeShadows>True</castEdgeShadows>
		<designationHotKey>Misc2</designationHotKey>
		<techLevel>Spacer</techLevel>
		<uiIconScale>0.50</uiIconScale>
		<rotatable>false</rotatable>
	</ThingDef>
</Defs>