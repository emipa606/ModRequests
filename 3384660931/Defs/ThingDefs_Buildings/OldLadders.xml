<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="MF_StairEntranceBase">
		<defName>MF_UpStair</defName>
		<label>ladder up</label>
		<description>A compact entrance leading to the upper level. Requires an indoor, roofed room with at least 25 cells. Cannot be built underground or in the same room as another upstairs.</description>
		<rotatable>false</rotatable>
		<statBases>
      		<WorkToBuild>1000</WorkToBuild>
    	</statBases>
		<uiIconScale>0.6</uiIconScale>
		<uiIconOffset>(0, 0.32)</uiIconOffset>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Buildings/OldLadder/LadderUp</texPath>
			<drawSize>(3, 3)</drawSize>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<isUpstairs>true</isUpstairs>
				<connectedToExitDef>MF_StairExit</connectedToExitDef>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_StairEntranceBase">
		<defName>MF_DownStair</defName>
		<label>ladder down</label>
		<description>A compact entrance leading to the lower level. Requires an indoor room with at least 25 cells. Cannot be built on upper levels or in the same room as another downstairs.</description>
		<rotatable>false</rotatable>
		<statBases>
      		<WorkToBuild>1000</WorkToBuild>
    	</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Buildings/OldLadder/LadderDown</texPath>
			<drawSize>(3, 3)</drawSize>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<isUpstairs>false</isUpstairs>
				<connectedToExitDef>MF_StairExit</connectedToExitDef>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_StairExitBase">
		<defName>MF_StairExit</defName>
		<label>ladder exit</label>
		<description>The endpoint of a ladder.</description>
		<rotatable>false</rotatable>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Buildings/OldLadder/LadderUp</texPath>
			<drawSize>(3, 3)</drawSize>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<upstairsEntranceDef>MF_UpStair</upstairsEntranceDef>
				<downstairsEntranceDef>MF_DownStair</downstairsEntranceDef>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>