<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="MF_StairEntranceBase">
		<defName>MF_BrickStairsMUpA</defName>
		<label>medium brick stairs up</label>
		<description>A set of medium-width brick stairs designed for ascending. Durable and aesthetically pleasing. Requires an indoor, roofed room with at least 25 cells. Cannot be built underground or in the same room as another upstairs.</description>
		<rotatable>true</rotatable>
		<size>(2, 2)</size>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<statBases>
      		<WorkToBuild>3000</WorkToBuild>
    	</statBases>
		<uiOrder>3030</uiOrder>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Buildings/BrickStairsMedium/BrickStairsMUp</texPath>
			<drawSize>(3.6, 3.6)</drawSize>
			<drawOffsetNorth>(0, 0, 0.78)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, 0.76)</drawOffsetSouth>
			<drawOffsetWest>(0, 0, 0.74)</drawOffsetWest>
			<drawOffsetEast>(0, 0, 0.74)</drawOffsetEast>
		</graphicData>
		<uiIconScale>0.9</uiIconScale>
		<uiIconOffset>(0, -0.2)</uiIconOffset>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<isUpstairs>true</isUpstairs>
				<connectedToExitDef>MF_BrickStairsMExitA</connectedToExitDef>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_StairEntranceBase">
		<defName>MF_BrickStairsMDownA</defName>
		<label>medium brick stairs down</label>
		<description>A set of medium-width brick stairs leading down. Built to last and adds a touch of style. Requires an indoor room with at least 25 cells. Cannot be built on upper levels or in the same room as another downstairs.</description>
		<rotatable>true</rotatable>
		<size>(2, 2)</size>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<statBases>
      		<WorkToBuild>3000</WorkToBuild>
    	</statBases>
		<uiOrder>3030</uiOrder>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Buildings/BrickStairsMedium/BrickStairsMDown</texPath>
			<drawSize>(2.4, 2.4)</drawSize>
			<drawOffsetNorth>(0, 0, 0.14)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, 0.14)</drawOffsetSouth>
			<drawOffsetWest>(0, 0, 0.14)</drawOffsetWest>
			<drawOffsetEast>(0, 0, 0.14)</drawOffsetEast>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<isUpstairs>false</isUpstairs>
				<connectedToExitDef>MF_BrickStairsMExitA</connectedToExitDef>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_StairExitBase">
		<defName>MF_BrickStairsMExitA</defName>
		<label>medium brick stairs exit</label>
		<description>The endpoint of a set of medium brick stairs.</description>
		<rotatable>true</rotatable>
		<size>(2, 2)</size>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Buildings/BrickStairsMedium/BrickStairsMUp</texPath>
			<drawSize>(2.5, 2.5)</drawSize>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<upstairsEntranceDef>MF_BrickStairsMUpA</upstairsEntranceDef>
				<downstairsEntranceDef>MF_BrickStairsMDownA</downstairsEntranceDef>
				<oppositeRotWithEntrance>true</oppositeRotWithEntrance>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>