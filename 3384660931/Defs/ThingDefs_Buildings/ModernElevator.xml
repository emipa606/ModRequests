<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>MF_ModernElevatorA</defName>
		<label>modern elevator</label>
		<description>A sleek, efficient lift with advanced engineering. Rapid and smooth.</description>
		<size>(3, 3)</size>
		<uiIconPath>Buildings/ModernElevator/ModernElevatorMovingAIcon</uiIconPath>
		<uiIconScale>1.25</uiIconScale>
		<uiIconOffset>(0, -0.08)</uiIconOffset>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Buildings/ModernElevator/ModernElevatorA</texPath>
			<drawSize>(5, 5)</drawSize>
			<drawOffset>(0, 0, 0)</drawOffset>
			<color>(150, 150, 150)</color>
		</graphicData>
		<useHitPoints>false</useHitPoints>
		<thingClass>MultiFloors.ModernElevator</thingClass>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<canOverlapZones>false</canOverlapZones>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<drawerType>RealtimeOnly</drawerType>
		<passability>PassThroughOnly</passability>
		<holdsRoof>true</holdsRoof>
		<fillPercent>0.75</fillPercent>
		<building>
			<paintable>true</paintable>
			<isTargetable>false</isTargetable>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
			<claimable>false</claimable>
			<expandHomeArea>false</expandHomeArea>
		</building>
		<researchPrerequisites>
      		<li>Electricity</li>
    	</researchPrerequisites>
		<statBases>
			<Flammability>0</Flammability>
			<WorkToBuild>3000</WorkToBuild>
		</statBases>
		<costList>
			<ComponentIndustrial>4</ComponentIndustrial>
      		<Steel>150</Steel>
		</costList>
		<designationCategory>MultiFloors</designationCategory>
		<uiOrder>3130</uiOrder>
		<placeWorkers>
			<li>MultiFloors.PlaceWorker_Elevator</li>
		</placeWorkers>
		<inspectorTabs>
			<!-- we need a tab to prevent exception in ASF -->
			<!-- although not functional -->
			<li>MultiFloors.ITab_ThingsToTransfer</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>150</basePowerConsumption>
				<showPowerNeededIfOff>true</showPowerNeededIfOff>
			</li>
			<li>
				<compClass>MultiFloors.CompGatherPawns</compClass>
			</li>
		</comps>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<elevatorSettings>
					<moverGraphic>
						<texPath>Buildings/ModernElevator/ModernElevatorMovingA</texPath>
						<drawSize>(5, 5)</drawSize>
						<!-- a higher y to make it cover the shaft -->
						<!-- z should be the same as the frame to make them aligned -->
						<drawOffset>(0, 0.01, 0)</drawOffset>
						<graphicClass>Graphic_Single</graphicClass>
						<color>(150, 150, 150)</color>
					</moverGraphic>
					<frontGraphic>
						<texPath>Buildings/ModernElevator/ModernElevatorFrontA</texPath>
						<drawSize>(5, 5)</drawSize>
						<!-- make it always over the moving part -->
						<drawOffset>(0, 0.2, 0)</drawOffset>
						<graphicClass>Graphic_Single</graphicClass>
						<color>(150, 150, 150)</color>
					</frontGraphic>
					<appearingDuration>30</appearingDuration>
					<switchingDuration>70</switchingDuration>
				</elevatorSettings>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>