<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>MF_WoodenElevatorA</defName>
		<label>wooden elevator</label>
		<description>A crude, creaky lift built from timber and powered by a ingenious pulley. Slow but steady.</description>
		<size>(3, 3)</size>
		<uiIconPath>Buildings/WoodenElevator/WoodenElevatorAIcon</uiIconPath>
		<uiIconScale>1.25</uiIconScale>
		<uiIconOffset>(0, -0.08)</uiIconOffset>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Buildings/WoodenElevator/WoodenElevatorA</texPath>
			<drawSize>(5, 5)</drawSize>
			<drawOffset>(0, 0, 0)</drawOffset>
			<color>(133, 97, 67)</color>
		</graphicData>
		<useHitPoints>false</useHitPoints>
		<thingClass>MultiFloors.WoodenElevator</thingClass>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<canOverlapZones>false</canOverlapZones>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<drawerType>RealtimeOnly</drawerType>
		<passability>PassThroughOnly</passability>
		<holdsRoof>true</holdsRoof>
		<fillPercent>0.75</fillPercent>
		<building>
			<paintable>true</paintable>
			<isTargetable>false</isTargetable>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
			<claimable>false</claimable>
			<expandHomeArea>false</expandHomeArea>
		</building>
		<statBases>
			<Flammability>0</Flammability>
			<WorkToBuild>1500</WorkToBuild>
		</statBases>
		<costList>
			<ComponentIndustrial>4</ComponentIndustrial>
      		<WoodLog>150</WoodLog>
		</costList>
		<designationCategory>MultiFloors</designationCategory>
		<uiOrder>3110</uiOrder>
		<placeWorkers>
			<li>MultiFloors.PlaceWorker_Elevator</li>
		</placeWorkers>
		<inspectorTabs>
			<!-- we need a tab to prevent exception in ASF -->
			<!-- although not functional -->
			<li>MultiFloors.ITab_ThingsToTransfer</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Breakdownable"/>
			<li>
				<compClass>MultiFloors.CompGatherPawns</compClass>
			</li>
		</comps>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<elevatorSettings>
					<moverGraphic>
						<texPath>Buildings/WoodenElevator/WoodenElevatorMovingA</texPath>
						<drawSize>(5, 5)</drawSize>
						<!-- a higher y to make it cover the shaft -->
						<!-- z should be the same as the frame to make them aligned -->
						<drawOffset>(0, 0.01, 0)</drawOffset>
						<graphicClass>Graphic_Single</graphicClass>
						<!-- todo: color for the rope -->
						<color>(133, 97, 67)</color>
					</moverGraphic>
					<frontGraphic>
						<texPath>Buildings/WoodenElevator/WoodenElevatorFrontA</texPath>
						<drawSize>(5, 5)</drawSize>
						<!-- make it always over the moving part -->
						<drawOffset>(0, 0.2, 0)</drawOffset>
						<graphicClass>Graphic_Single</graphicClass>
						<color>(133, 97, 67)</color>
					</frontGraphic>
					<appearingDuration>30</appearingDuration>
					<switchingDuration>210</switchingDuration>
				</elevatorSettings>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>