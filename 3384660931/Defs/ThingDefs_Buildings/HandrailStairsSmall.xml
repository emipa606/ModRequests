<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="MF_StairEntranceBase">
		<defName>MF_HandrailStairsSUpA</defName>
		<label>small handrail stairs up</label>
		<description>Narrow stairs with a simple handrail for ascending. Requires an indoor, roofed room with at least 25 cells. Cannot be built underground or in the same room as another upstairs.</description>
		<rotatable>true</rotatable>
		<size>(1, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<statBases>
      		<WorkToBuild>2500</WorkToBuild>
    	</statBases>
		<uiOrder>3040</uiOrder>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Buildings/HandrailStairsSmall/HandrailStairsSUp</texPath>
			<drawSize>(2.2, 2.2)</drawSize>
			<drawOffsetNorth>(0, 0, 0.08)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, -0.17)</drawOffsetSouth>
			<drawOffsetWest>(-0.15, 0, 0.5)</drawOffsetWest>
			<drawOffsetEast>(0.15, 0, 0.5)</drawOffsetEast>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<isUpstairs>true</isUpstairs>
				<connectedToExitDef>MF_HandrailStairsSExitA</connectedToExitDef>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_StairEntranceBase">
		<defName>MF_HandrailStairsSDownA</defName>
		<label>small handrail stairs down</label>
		<description>Narrow stairs with a simple handrail leading down. Requires an indoor room with at least 25 cells. Cannot be built on upper levels or in the same room as another downstairs.</description>
		<rotatable>true</rotatable>
		<size>(1, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<statBases>
      		<WorkToBuild>2500</WorkToBuild>
    	</statBases>
		<uiOrder>3040</uiOrder>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Buildings/HandrailStairsSmall/HandrailStairsSDown</texPath>
			<drawSize>(2.2, 2.2)</drawSize>
			<drawOffsetNorth>(0, 0, 0)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, 0.1)</drawOffsetSouth>
			<drawOffsetWest>(0.25, 0, -0.15)</drawOffsetWest>
			<drawOffsetEast>(-0.25, 0, -0.15)</drawOffsetEast>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<isUpstairs>false</isUpstairs>
				<connectedToExitDef>MF_HandrailStairsSExitA</connectedToExitDef>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_StairExitBase">
		<defName>MF_HandrailStairsSExitA</defName>
		<label>small handrail stairs exit</label>
		<description>The endpoint of a small handrail stairs.</description>
		<rotatable>true</rotatable>
		<size>(1, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Buildings/HandrailStairsSmall/HandrailStairsSUp</texPath>
			<drawSize>(2.2, 2.2)</drawSize>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<upstairsEntranceDef>MF_HandrailStairsSUpA</upstairsEntranceDef>
				<downstairsEntranceDef>MF_HandrailStairsSDownA</downstairsEntranceDef>
				<oppositeRotWithEntrance>true</oppositeRotWithEntrance>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>