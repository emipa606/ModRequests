<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="MF_StairEntranceBase">
		<defName>MF_HandrailStairsMUpA</defName>
		<label>medium handrail stairs up</label>
		<description>Moderately wide stairs with sturdy handrails for ascending to a higher level. Requires an indoor, roofed room with at least 25 cells. Cannot be built underground or in the same room as another upstairs.</description>
		<rotatable>true</rotatable>
		<size>(2, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<statBases>
      		<WorkToBuild>3000</WorkToBuild>
    	</statBases>
		<uiOrder>3050</uiOrder>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Buildings/HandrailStairsMedium/HandrailStairsMUp</texPath>
			<drawSize>(3.3, 3.3)</drawSize>
			<drawOffsetNorth>(0, 0, 0.76)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, 0.4)</drawOffsetSouth>
			<drawOffsetWest>(-0.25, 0, 0.55)</drawOffsetWest>
			<drawOffsetEast>(0.25, 0, 0.55)</drawOffsetEast>
		</graphicData>
		<uiIconScale>0.9</uiIconScale>
		<uiIconOffset>(0, -0.2)</uiIconOffset>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<isUpstairs>true</isUpstairs>
				<connectedToExitDef>MF_HandrailStairsMExitA</connectedToExitDef>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_StairEntranceBase">
		<defName>MF_HandrailStairsMDownA</defName>
		<label>medium handrail stairs down</label>
		<description>Moderately wide stairs with sturdy handrails leading to a lower level. Requires an indoor room with at least 25 cells. Cannot be built on upper levels or in the same room as another downstairs.</description>
		<rotatable>true</rotatable>
		<size>(2, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<statBases>
      		<WorkToBuild>3000</WorkToBuild>
    	</statBases>
		<uiOrder>3050</uiOrder>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Buildings/HandrailStairsMedium/HandrailStairsMDown</texPath>
			<drawSize>(2.2, 2.2)</drawSize>
			<drawOffsetNorth>(0, 0, 0)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, 0.2)</drawOffsetSouth>
			<drawOffsetWest>(0.25, 0, 0)</drawOffsetWest>
			<drawOffsetEast>(-0.3, 0, 0.06)</drawOffsetEast>
		</graphicData>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<isUpstairs>false</isUpstairs>
				<connectedToExitDef>MF_HandrailStairsMExitA</connectedToExitDef>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_StairExitBase">
		<defName>MF_HandrailStairsMExitA</defName>
		<label>medium handrail stairs exit</label>
		<description>The endpoint of a medium handrail stairs.</description>
		<rotatable>true</rotatable>
		<size>(2, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<upstairsEntranceDef>MF_HandrailStairsMUpA</upstairsEntranceDef>
				<downstairsEntranceDef>MF_HandrailStairsMDownA</downstairsEntranceDef>
				<oppositeRotWithEntrance>true</oppositeRotWithEntrance>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>