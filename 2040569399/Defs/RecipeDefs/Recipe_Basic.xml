<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <RecipeDef Name="SurgeryBasic" ParentName="SurgeryFlesh" Abstract="True">
        <surgerySuccessChanceFactor>1.5</surgerySuccessChanceFactor>
        <deathOnFailedSurgeryChance>0</deathOnFailedSurgeryChance>
        <recipeUsers>
            <li>Human</li>
        </recipeUsers>
        <dontShowIfAnyIngredientMissing>true</dontShowIfAnyIngredientMissing>
    </RecipeDef>
    
    <RecipeDef ParentName="SurgerySimple">
        <defName>InstallSteelArm</defName>
        <label>install steel arm</label>
        <description>Installs steel arm.</description>
        <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
        <jobString>Installing steel arm.</jobString>
        <workAmount>500</workAmount>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>SteelArm</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
            <thingDefs>
                <li>SteelArm</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Shoulder</li>
        </appliedOnFixedBodyParts>
        <addsHediff>SteelArm</addsHediff>
    </RecipeDef>
    
