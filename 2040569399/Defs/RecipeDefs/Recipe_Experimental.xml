<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<RecipeDef Name="SurgeryExperimental" ParentName="SurgeryFlesh" Abstract="True">
		<surgerySuccessChanceFactor>0.6</surgerySuccessChanceFactor>
		<deathOnFailedSurgeryChance>0.75</deathOnFailedSurgeryChance>
		<recipeUsers>
			<li>Human</li>
		</recipeUsers>
	</RecipeDef>

	<!-- Vanilla -->

	<RecipeDef ParentName="SurgeryExperimental">
		<defName>InstallNaturalHeartExp</defName>
		<label>experimental heart transplant</label>
		<description>A new heart! We don't really know what we're doing... but we either try this, or you die.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing heart.</jobString>
		<workAmount>2500</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Heart</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>Heart</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Heart</li>
		</appliedOnFixedBodyParts>
		<addsHediff>Heart</addsHediff>
	</RecipeDef>

