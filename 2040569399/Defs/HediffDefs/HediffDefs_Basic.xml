<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <HediffDef ParentName="addedPartSimple">
        <defName>SteelArm</defName>
        <label>steel arm</label>
        <labelNoun>a steel arm</labelNoun>
		<description>A very poor arm replacement. Looks bad, feels bad, is bad.</description>
        <defaultLabelColor>(102,178,255)</defaultLabelColor>
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>steel fist</label>
                        <capacities>
                            <li>Blunt</li>
                        </capacities>
                        <power>10.2</power> <!-- More powerful than natural arm -->
                        <cooldownTime>2</cooldownTime>
                    </li>
                </tools>
            </li>
        </comps>
        <spawnThingOnRemoved>SteelArm</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>0.35</partEfficiency>
            <betterThanNatural>false</betterThanNatural>
        </addedPartProps>
    </HediffDef>

    <HediffDef ParentName="addedPartSimple">
        <defName>EarBandage</defName>
        <label>ear bandage</label>
        <labelNoun>an ear bandage</labelNoun>
		<description>Covers a missing ear. Look like a certain unsuccessful 19th century artist!</description>
        <spawnThingOnRemoved>EarBandage</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>0.6</partEfficiency>
			<betterThanNatural>false</betterThanNatural>
        </addedPartProps>
    </HediffDef>

    <HediffDef ParentName="addedPartSimple">
        <defName>EyePatch</defName>
        <label>eye patch</label>
        <labelNoun>an eye patch</labelNoun>
		<description>Covers the eye socket. Intimidating.</description>
        <spawnThingOnRemoved>EyePatch</spawnThingOnRemoved>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>0</partEfficiency>
            <betterThanNatural>false</betterThanNatural>
        </addedPartProps>
    </HediffDef>

</Defs>