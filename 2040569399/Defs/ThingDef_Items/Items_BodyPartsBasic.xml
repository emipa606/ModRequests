<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- New category for basic prostheses-->
    <ThingCategoryDef>
        <defName>BasicProstheses</defName>
        <label>basic prostheses</label>
        <parent>BodyPartsProsthetic</parent>
    </ThingCategoryDef>

    <ThingDef Name="Basic" ParentName="BodyPartModBase" Abstract="True">
        <tradeTags>
            <li>BasicProstheses</li>
        </tradeTags>
        <thingCategories>
            <li>BasicProstheses</li>
        </thingCategories>
        <statBases>
            <DeteriorationRate>2.0</DeteriorationRate>
        </statBases>
    </ThingDef>

    <!-- Add basic parts -->

    <ThingDef ParentName="Basic">
        <defName>SteelArm</defName>
        <label>steel arm</label>
        <description>A very poor arm replacement. Looks bad, feels bad, is bad.</description>
        <graphicData>
            <texPath>Things/Item/BodyPart/BasicProsthesis</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>151.5</MarketValue>
            <Mass>6</Mass>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="Basic">
        <defName>EyePatch</defName>
        <label>eye patch</label>
        <description>Covers the eye socket. Intimidating.</description>
        <graphicData>
            <texPath>Things/Item/BodyPart/BasicProsthesis</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>33</MarketValue>
            <Mass>0.3</Mass>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="Basic">
        <defName>HookHand</defName>
        <label>hook hand</label>
        <description>Replaces missing hands. Pretty scary. Yarr.</description>
        <graphicData>
            <texPath>Things/Item/BodyPart/BasicProsthesis</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>69.5</MarketValue>
            <Mass>2</Mass>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="Basic">
        <defName>Denture</defName>
        <label>denture</label>
        <description>Replaces a missing jaw with wooden teeth. Smells a bit.</description>
        <graphicData>
            <texPath>Things/Item/BodyPart/BasicProsthesis</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>29</MarketValue>
            <Mass>2</Mass>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="Basic">
        <defName>PegLeg</defName>
        <label>peg leg</label>
        <description>Replaces a missing leg with a wooden one. Out of fashion but it does its job pretty well.</description>
        <graphicData>
            <texPath>Things/Item/BodyPart/BasicProsthesis</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>60</MarketValue>
            <Mass>6</Mass>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="Basic">
        <defName>WoodenFoot</defName>
        <label>wooden foot</label>
        <description>Replaces a missing foot with a wooden imitation. At least it's more comfortable than hopping around.</description>
        <graphicData>
            <texPath>Things/Item/BodyPart/BasicProsthesis</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>24</MarketValue>
            <Mass>2</Mass>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="Basic">
        <defName>EarBandage</defName>
        <label>ear bandage</label>
        <description>Covers a missing ear. Look like a certain unsuccessful 19th century artist!</description>
        <graphicData>
            <texPath>Things/Item/BodyPart/BasicProsthesis</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>33</MarketValue>
            <Mass>0.2</Mass>
        </statBases>
    </ThingDef>
</Defs>