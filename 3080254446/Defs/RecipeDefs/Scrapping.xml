		  <Steel>25</Steel>
		</products>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>Scrap_Plate</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>

