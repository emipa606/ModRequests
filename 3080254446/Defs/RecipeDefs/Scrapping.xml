<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	  
	<RecipeDef>
		<defName>CutPlatesFromChassis</defName>
		<label>cut plates from scrap</label>
		<description>Use tools to cut scrap plates that are useful for building.</description>
		<jobString>Cut scrap plates from car chassis.</jobString>
		<workAmount>400</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>UsableCarChassisPart</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<Scrap_Plate>8</Scrap_Plate>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>UsableCarChassisPart</li>
			</thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>TableMachining</li>
		</recipeUsers><!--
		<researchPrerequisites>
			<li>Machining</li>
		</researchPrerequisites>-->
	</RecipeDef>
	 
