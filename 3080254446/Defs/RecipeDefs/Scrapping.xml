	<RecipeDef>
		<defName>ExtractMetalFromScrapPlates</defName>
		<label>smelt metal from scrap plates</label>
		<description>Use heat and strong electromagnets to extract useful metal from scrap plates.</description>
		<jobString>Smelting metal from scrap plates.</jobString>
		<workAmount>400</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>Scrap_Plate</li>
			  </thingDefs>
			</filter>
			<count>16</count>
		  </li>
		</ingredients>
		<!-- Switched to standard products so we can do "do until you have X"
		<specialProducts>
		  <li>Smelted</li>
		</specialProducts>-->
