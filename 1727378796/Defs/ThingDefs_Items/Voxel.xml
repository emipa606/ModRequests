<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--Voxels. Resources for free, if you have enough powercells. Which you won't. sob.jpg-->

  <ThingDef ParentName="ResourceBase">
    <defName>TM_Voxel</defName>
    <label>voxel</label>
    <description>A cube of disassociated matter and energy, produced from the power cell of a transmution reactor. Can be used in place of raw materials, but manufacturing voxels drains energy cells quickly.</description>
    <graphicData>
      <texPath>Things/Item/Voxel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <MarketValue>0</MarketValue>
      <Mass>0.008</Mass>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stackLimit>500</stackLimit>
    <smallVolume>true</smallVolume>
    <deepCommonality>0.5</deepCommonality>
    <deepCountPerPortion>40</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>2</min>
      <max>10</max>
    </deepLumpSizeRange>
    <stuffProps>
      <color>(180,173,150)</color>
      <commonality>0.05</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.7</MaxHitPoints>
        <Flammability>0.4</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>

  <ThingDef ParentName="StoneBlocksBase">
    <defName>BlocksVoxel</defName>
    <label>voxel blocks</label>
    <description>Construction blocks made of voxels in a transmution reactor. Looks quite decent and is an equivalent substitute for natural stone building materials.</description>
    <graphicData>
      <color>(200,200,200)</color>
    </graphicData>
    <statBases>
      <Mass>1.25</Mass>
    </statBases>
    <stuffProps>
      <color>(200,200,200)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>voxel</stuffAdjective>
      <statFactors>
        <Beauty>1</Beauty>
        <MaxHitPoints>1.2</MaxHitPoints>
				<WorkToBuild>5.5</WorkToBuild>
				<WorkToMake>1.15</WorkToMake>
      </statFactors>
      <statOffsets>
        <Beauty>1</Beauty>
      </statOffsets>
    </stuffProps>
  </ThingDef>

</Defs>
