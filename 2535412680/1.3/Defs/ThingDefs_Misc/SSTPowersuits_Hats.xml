<Defs>

 <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_SSTPowersuithelmetGreen</defName>
    <label>(SSTP)Powersuit Helmet Green</label>
    <description>A Green helmet for a Green powersuit.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Display/SSTPowersuitHelmet_Green</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	        <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>21000</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>2.7</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>2.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.00</ArmorRating_Blunt>
      <ArmorRating_Heat>0.9</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>50</Plasteel>
    </costList>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Hats/SSTPowersuitHelmet_Green</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
	  <tags>
        <li>GreenSSTPowersuitHelmet</li>
		<li>CallistanSoldier</li>
		<li>EVA</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
	  <useWornGraphicMask>true</useWornGraphicMask>	 	  
	  </apparel>  
  </ThingDef>

  
