<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[Ry]Rimcraft Factions</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ============================ Horde ========================== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<AlienRace.RaceSettings>
							<defName>Rimcraft_Allied_RaceSettings</defName>
							<pawnKindSettings>
								<!-- ============================ Slaves ========================== -->
								<alienslavekinds>
									<li>
										<kindDefs>
											<!-- ==== Alliance ==== -->
											<li>WoW_VoidElf_Slave</li>
											<!-- ==== Horde ==== -->
											<li>WoW_MagharOrc_Slave</li>
											<li>WoW_Nightborne_Slave</li>
										</kindDefs>
										<chance>50.0</chance>
									</li>
								</alienslavekinds>
								<!-- ============================ Refugees ========================== -->
								<alienrefugeekinds>
									<li>
										<kindDefs>
											<!-- ==== Alliance ==== -->
											<li>WoW_VoidElf_Slave</li>
											<!-- ==== Horde ==== -->
											<li>WoW_MagharOrc_Slave</li>
											<li>WoW_Nightborne_Slave</li>
										</kindDefs>
										<chance>50.0</chance>
									</li>
								</alienrefugeekinds>
								<!-- ============================ Wanderers ========================== -->
								<alienwandererkinds>
									<!-- ==== Alliance ==== -->
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>WoW_VoidElf_Villager</li>
												</kindDefs>
												<chance>20.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
									<!-- ==== Horde ==== -->
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>WoW_MagharOrc_Villager</li>
													<li>WoW_Nightborne_Villager</li>
												</kindDefs>
												<chance>20.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</alienwandererkinds>
							</pawnKindSettings>
						</AlienRace.RaceSettings>
					</value>
				</li>
				<!-- ============================ Horde ========================== -->
			</operations>
		</match>
	</Operation>
</Patch>