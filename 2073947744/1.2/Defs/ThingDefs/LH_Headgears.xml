<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="LH_HelmetMakeableBase">
    <defName>LightSafetyHelmet</defName>
    <label>LS Helmet</label>
    <description>Light Safety Helmet. It was developed for working in the dark. It lights up the dark.and It also has moderate protection. However, the animals may be amazed at the brightness of the light.</description>
    <thingClass>LHMOD.ApparelWithLHMOD</thingClass>
    <!--<thingClass>MiningHelmet.ApparelWithMiningLight</thingClass>-->
    <techLevel>Industrial</techLevel>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Apparel/LH/LightSafetyHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <statBases>      
      <WorkToMake>3300</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>2.1</Mass>
      <ArmorRating_Sharp>0.486</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.225</ArmorRating_Blunt>
      <ArmorRating_Heat>0.324</ArmorRating_Heat>
      <Insulation_Cold>0.5</Insulation_Cold>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MiningYield>+0.05</MiningYield>
      <ConstructionSpeed>+0.05</ConstructionSpeed>
      <TameAnimalChance>-0.05</TameAnimalChance>
    </equippedStatOffsets>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>2</glowRadius>
        <glowColor>(40,240,100,0)</glowColor>
      </li>
    </comps>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/LH/LightSafetyHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <!--<li>IndustrialMilitaryBasic</li>-->
      </tags>
      <defaultOutfitTags>
        <li>LH_Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

