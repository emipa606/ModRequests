<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <!-- ================= Misc ================= -->

  <TerrainDef ParentName="FloorBase">
    <defName>GoldenrodFloor</defName>
    <label>assorted surface</label>
    <renderPrecedence>230</renderPrecedence>
    <description>Colored asphalt plates arranged to create a surface for roads and walkways. Pretty to look at.</description>
    <color>(255, 255, 255)</color>
    <texturePath>Terrain/Surfaces/goldenrodfloor</texturePath>
    <edgeType>Hard</edgeType>
    <statBases>
      <Beauty>1</Beauty>
      <WorkToBuild>900</WorkToBuild>
    </statBases>
    <costList>
      <Steel>2</Steel>
    </costList>
    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
  </TerrainDef>
  <TerrainDef  ParentName="FloorBase">
    <defName>PenWoodFloor</defName>
    <label>homely wood floor</label>
    <renderPrecedence>250</renderPrecedence>
    <description>A colorful wooden plank floor. Pleasing to look at and quick to build, but it is also very flammable.</description>
    <texturePath>Terrain/Surfaces/penwoodfloor</texturePath>
    <burnedDef>BurnedWoodPlankFloor</burnedDef>
    <color>(255, 255, 255)</color>
    <statBases>
      <Beauty>1</Beauty>
      <WorkToBuild>240</WorkToBuild>
      <Flammability>0.22</Flammability>
    </statBases>
    <costList>
      <WoodLog>3</WoodLog>
    </costList>
    <constructEffect>ConstructWood</constructEffect>
  </TerrainDef>

</Defs>
