<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Signs and Comments</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
					  <ThingDef ParentName="SignBuildingBase">
					    <defName>PensSignActual</defName>
					    <label>sign panel</label>
					    <description>A panel with writing on it.</description>
					    <passability>PassThroughOnly</passability>
					    <altitudeLayer>Building</altitudeLayer>
					    <comps>
					      <li Class="Dark.Signs.CompProperties_Sign">
					        <canEditContent>true</canEditContent>
					      </li>
					    </comps>
					    <fillPercent>0.15</fillPercent>
					    <pathCost>0</pathCost>
					    <statBases>
					      <MaxHitPoints>100</MaxHitPoints>
					      <Mass>8</Mass>
					      <WorkToBuild>20</WorkToBuild>
					      <Flammability>1.0</Flammability>
					      <Beauty>0</Beauty>
					    </statBases>
					    <costList>
      					  <Steel>10</Steel>
    					</costList>
					    <rotatable>false</rotatable>
					    <graphicData>
					      <texPath>Things/Building/Furniture/penssign</texPath>
					      <graphicClass>Graphic_Single</graphicClass>
					      <drawSize>(1,1.17)</drawSize>
					      <drawOffset>(0,0.3,0.3)</drawOffset>
					    </graphicData>
					  </ThingDef>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
					  <ThingDef ParentName="SignBuildingBase">
					    <defName>PensSignActualTwo</defName>
					    <label>decorative sign</label>
					    <description>A decorative panel with writing on it.</description>
					    <passability>PassThroughOnly</passability>
					    <altitudeLayer>Building</altitudeLayer>
					    <comps>
					      <li Class="Dark.Signs.CompProperties_Sign">
					        <canEditContent>true</canEditContent>
					      </li>
					    </comps>
					    <fillPercent>0.15</fillPercent>
					    <pathCost>0</pathCost>
					    <statBases>
					      <MaxHitPoints>100</MaxHitPoints>
					      <Mass>8</Mass>
					      <WorkToBuild>20</WorkToBuild>
					      <Flammability>1.0</Flammability>
					      <Beauty>0</Beauty>
					    </statBases>
					    <costList>
      					  <Steel>10</Steel>
    					</costList>
					    <rotatable>false</rotatable>
					    <graphicData>
					      <texPath>Things/Building/Furniture/pensgym</texPath>
					      <graphicClass>Graphic_Single</graphicClass>
					      <drawSize>(1,1.17)</drawSize>
					      <drawOffset>(0,0.3,0.3)</drawOffset>
					    </graphicData>
					  </ThingDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>