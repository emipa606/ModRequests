<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "Alpaca"]/label</xpath>
        <value>
            <label>llama</label>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "Alpaca"]/description</xpath>
        <value>
            <description>A medium-sized ungulate closely related to the alpaca, the llama is usually raised for its remarkably soft and insulating wool. Llamas have also been used as pack animals since they hauled cargo on the rugged mountain trails of ancient South America.</description>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/PawnKindDef[defName = "Alpaca"]/label</xpath>
        <value>
            <label>llama</label>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "WoolAlpaca"]/label</xpath>
        <value>
            <label>llama wool</label>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "WoolAlpaca"]/description</xpath>
        <value>
            <description>The remarkably soft wool of an llama. It is warm, protects well from heat, and fetches a high price.</description>
        </value>
    </Operation>
</Patch>
