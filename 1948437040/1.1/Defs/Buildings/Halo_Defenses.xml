<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Heavy Barricade -->
  <ThingDef ParentName="BuildingBase">
    <defName>rco_UNSCHeavyBarricade</defName>
    <label>UNSC Heavy Barricade</label>
    <description>A combat barrier is a mobile ground barrier used by UNSC infantry forces. They can be deployed and set up relatively quickly to aid the defense of a strategic position.</description>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Buildings/HeavyBarricade/HeavyBarricade</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>3,1</drawSize>
      <damageData>
        <rect>(0,0,1,0.15)</rect>
      </damageData>
    </graphicData>
 
    <size>(3,1)</size>
    <uiIconPath>Things/Buildings/HeavyBarricade/HeavyBarricade_south</uiIconPath>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>200</pathCost>
    <pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.66</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <costList>
      <Plasteel>75</Plasteel>
    </costList>
    <statBases>
      <MaxHitPoints>750</MaxHitPoints>
      <Flammability>0.0</Flammability>
      <Beauty>-10</Beauty>
      <WorkToBuild>500</WorkToBuild>

    </statBases>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <repairable>true</repairable>
    </building>
    <coversFloor>false</coversFloor>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <rotatable>true</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>rco_HaloCategory</designationCategory>
    <repairEffect>ConstructMetal</repairEffect>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>

    <researchPrerequisites>
      <li>UnscWeaponry</li>
    </researchPrerequisites>
	
    <comps>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
	
  </ThingDef>
  
  
