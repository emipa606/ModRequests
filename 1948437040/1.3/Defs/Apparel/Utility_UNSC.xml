<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ApparelBase">
    <defName>rce_MarineBackpack</defName>
    <label>UNSC Marine Backpack</label>
    <description>A multi-purpose backpack worn by many members of the UNSC.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <recipeUsers>
        <li>rce_UNSCWorkbench</li>
      </recipeUsers>
      <useIngredientsForColor>false</useIngredientsForColor>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
	<costList>
		<Steel>25</Steel>
		<Plasteel>5</Plasteel>
		<ComponentIndustrial>1</ComponentIndustrial>
	</costList>
		<equippedStatOffsets>
		  <CarryingCapacity>25.0</CarryingCapacity>
		  <MoveSpeed>-0.1</MoveSpeed>		  
		</equippedStatOffsets>	
    <graphicData>
      <texPath>Things/Utility/UNSC/unscMarineBackpackC</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>2400</WorkToMake>
      <Mass>2</Mass>
      <Flammability>0.4</Flammability>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <generateAllowChance>0.15</generateAllowChance>
    <apparel>
	  <wornGraphicPath>Things/Utility/UNSC/unscMarineBackpackC</wornGraphicPath>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
		<li>UnscArmor</li>
      </tags>
      <wornGraphicData>
        <renderUtilityAsPack>true</renderUtilityAsPack>
        <north>
          <offset>(0.0,0.1)</offset>
		  <hulk><offset>(-0.0,-0.1)</offset></hulk>
		  <fat><offset>(-0.0,-0.0)</offset></fat>
		  <thin><offset>(0.0,-0.0)</offset></thin>
        </north>
        <south>
          <offset>(0.0,0.0)</offset>
		  <female><offset>(0.0,-0.2)</offset> </female>
		  <hulk><offset>(-0.0,-0.0)</offset></hulk>
		  <fat><offset>(-0.0,-0.0)</offset></fat>
		  <thin><offset>(-0.0,-0.25)</offset></thin>
        </south>
       <east>
          <offset>(-0.1,-0.0)</offset>
		  <hulk><offset>(-0.15,-0.0)</offset></hulk>
		  <fat><offset>(-0.10,-0.0)</offset></fat>
		  <thin><offset>(0.05,-0.0)</offset></thin>
        </east>
        <west>
          <offset>(0.1,-0.0)</offset>
		  <hulk><offset>(0.15,-0.0)</offset></hulk>
		  <fat><offset>(0.10,-0.0)</offset></fat>
		  <thin><offset>(-0.05,-0.0)</offset></thin>
        </west>
        <male> <scale>(1.0,1.0)</scale></male>
        <female><scale>(1.0,1.0)</scale></female>
        <thin><scale>(1.0,1.0)</scale></thin>
        <hulk><scale>(1.0,1.0)</scale></hulk>
        <fat> <scale>(1.0,1.0)</scale></fat>
      </wornGraphicData>
    </apparel>
  </ThingDef>




</Defs>