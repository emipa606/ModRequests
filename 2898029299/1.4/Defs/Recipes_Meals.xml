<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=================================== Lavish meal ==========================================-->

  <RecipeDef ParentName="CookMealLavishBase">
    <defName>GARF_CookLasagna</defName>
    <label>cook lasagna</label>
    <description>Cook a delicious lasagna</description>
    <jobString>Cooking lasagna</jobString>
    <ingredients>
      <li>
        <filter>
          <customSummary>protein</customSummary>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
    </ingredients>
    <products>
      <GARF_Lasagna>1</GARF_Lasagna>
    </products>
    <displayPriority>300</displayPriority>
	<recipeUsers>
		<li>ElectricStove</li>
		<li>FueledStove</li>
	</recipeUsers>
  </RecipeDef>

  <RecipeDef ParentName="CookMealLavishBulkBase">
    <defName>GARF_CookLasagnaBulk</defName>
    <label>cook lasagna x4</label>
    <description>Cook 4 delicious lasagna</description>
    <jobString>Cooking 4 lasagna.</jobString>
    <ingredients>
      <li>
        <filter>
          <customSummary>protein</customSummary>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>2.0</count>
      </li>
    </ingredients>
    <products>
      <GARF_Lasagna>4</GARF_Lasagna>
    </products>
    <displayPriority>600</displayPriority>
	<recipeUsers>
		<li>ElectricStove</li>
		<li>FueledStove</li>
	</recipeUsers>
  </RecipeDef>


</Defs>
