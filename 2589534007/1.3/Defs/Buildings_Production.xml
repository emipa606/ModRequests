<?xml version="1.0" encoding="utf-8" ?>

<Defs>
  <ThingDef ParentName="BenchBase">
    <defName>NeurotrainerWorkTable</defName>
    <label>Neurotrainer Crafting Station</label>
    <thingClass>Building_WorkTable</thingClass>
    <description>A work station to produce devices for expanding colonist's mental capabilities and creating Artificial Intelligences.</description>
    <graphicData>
      <texPath>Things/Building/Production/NeurotrainerTable</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,1)</drawSize>
    </graphicData>
    <costList>
      <Steel>75</Steel>
	  <Gold>15</Gold>
	  <ComponentIndustrial>3</ComponentIndustrial>
	  <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>1000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
      <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>MakeShootingNeurotrainer</li>
      <li>MakeMeleeNeurotrainer</li>
      <li>MakeConstructionNeurotrainer</li>
      <li>MakeMiningNeurotrainer</li>
      <li>MakeCookingNeurotrainer</li>
      <li>MakePlantsNeurotrainer</li>
      <li>MakeAnimalsNeurotrainer</li>
      <li>MakeCraftingNeurotrainer</li>
      <li>MakeArtisticNeurotrainer</li>
      <li>MakeMedicalNeurotrainer</li>
      <li>MakeSocialNeurotrainer</li>
      <li>MakeIntellectualNeurotrainer</li>
      <li>MakeMechSerumHealer</li>
      <li>MakeMechSerumResurrector</li>
      <li>MakeAIPersonaCore</li>
      <li>MakeTechprofSubpersonaCore</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
	<linkableFacilities>
	  <li>ToolCabinet</li>
	</linkableFacilities>
      </li>
    </comps>
    <researchPrerequisites>
      <li>NeurotrainerMaking</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>