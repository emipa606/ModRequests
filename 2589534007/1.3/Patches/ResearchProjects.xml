<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
						<value>
							<ResearchProjectDef>
								<defName>PsytrainerMaking</defName>
								<label>Psytrainers</label>
								<description>Further research into the human brain allows you to modify your neurotrainers into Psytrainers, making it possible to expand a colonist's mental capabilities to include powerful psychic abilities.</description>
								<baseCost>1200</baseCost>
								<techLevel>Spacer</techLevel>
								<prerequisites>
									<li>NeurotrainerMaking</li>
								</prerequisites>
								<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
								<requiredResearchFacilities>
									<li>MultiAnalyzer</li>
								</requiredResearchFacilities>
							</ResearchProjectDef>	
						</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>