<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Pirate Patreons -->
  
  <RulePackDef>
    <defName>NamerPatreons</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[PatreonNames]</li>
      </rulesStrings>
	  <rulesFiles>
		<li>PatreonNames->Names/PatreonNames</li> 
		<!-- PatreonNames.txt should be the file you need to update and should-->
		<!-- be located in the mod folder at "Languages/English/Strings/Names" .-->
	  </rulesFiles>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerFactionPatreons</defName>
    <rulePack>
      <rulesStrings>
		<li>r_name->The Patreons</li>
		
        <li>r_name->The [AnimalBadass]s of [PatreonNames]</li>
        <li>r_name->The [PersonBadass]s of [PatreonNames]</li>
        <li>r_name->The [PatreonNames] [groupname]</li>
        <li>r_name->The [PatreonNames] [Enemy]s</li>
        <li>r_name->The [AdjectiveBadass] [PatreonNames]</li>
        <li>r_name->The [PersonAlly]s of [PatreonNames]</li>
        <li>r_name(p=0.4)->The Eaters of [PatreonNames]'s [Gore]</li>
		
        <li>r_name->[PatreonNames]'s [Enemy]s</li>
        <li>r_name->[PatreonNames]'s [AnimalBadass]s</li>
        <li>r_name->[PatreonNames]'s [Weapon]s</li>
        <li>r_name->[PatreonNames] [groupname]</li>
        <li>r_name->[PatreonNames]'s [ColorBadass] [Weapon]s</li>
        <li>r_name->[PatreonNames]'s [ColorBadass] [AnimalBadass]s</li>
        <li>r_name->[PatreonNames]'s [ColorBadass] [PersonBadass]s</li>
        <li>r_name->[PatreonNames]'s [ColorBadass] [Enemy]s</li>
      </rulesStrings>
      <rulesFiles>
        <li>groupname->Words/Nouns/GroupNames</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerSettlementPatreons</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name(p=4)->[patreontown_combo]</li>
        <li>r_name->[townname_wordgen]</li>

        <li>patreontown_combo->[PatreonNames] [geography]</li>
        <li>patreontown_combo->[PatreonNames]'s [geography]</li>
        <li>patreontown_combo->[PatreonNames]'s [ConceptBadass] [geography]</li>
        <li>patreontown_combo->[PatreonNames]'s [ConceptBadass]'s [geography]</li>
        <li>patreontown_combo->[PatreonNames]'s [Enemy]'s [geography]</li>
        <li>patreontown_combo->[PatreonNames]'s [Enemy] [geography]</li>
        <li>patreontown_combo->[PatreonNames]'s [Weapon]'s [geography]</li>
        <li>patreontown_combo->[PatreonNames]'s [Weapon] [geography]</li>
        <li>patreontown_combo->[PatreonNames]'s [ColorBadass] [geography]</li>
        <li>geography(p=2)->[TerrainFeature]</li>
        <li>geography->[Community]</li>

        <li>townname_wordgen(p=2)->[SylE][SylE]</li>
        <li>townname_wordgen(p=2)->[SylE][SylE][SylE]</li>
        <li>townname_wordgen(p=2)->[SylE][townendevil]</li>
        <li>townname_wordgen(p=2)->[SylE][SylE][townendevil]</li>
        <li>townendevil->vast</li>
        <li>townendevil->varg</li>
        <li>townendevil->vix</li>
        <li>townendevil->tor</li>
        <li>townendevil->tear</li>
        <li>townendevil->cut</li>
        <li>townendevil->lop</li>
        <li>townendevil->oze</li>
        <li>townendevil->ozzle</li>
        <li>townendevil->latch</li>
        <li>townendevil->lock</li>
        <li>townendevil->burn</li>
        <li>townendevil->sear</li>
        <li>townendevil->shank</li>
        <li>townendevil->hurt</li>
        <li>townendevil->vash</li>
        <li>townendevil->warg</li>
        <li>townendevil->wug</li>
        <li>townendevil->thot</li>
        <li>townendevil->thard</li>
        <li>townendevil->thad</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
</Defs>