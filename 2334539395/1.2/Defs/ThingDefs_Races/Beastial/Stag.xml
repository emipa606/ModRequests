<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>TRAHS_Stag</defName>
    <label>Stag</label>
    <description>A large Stag beetle, used as good and passenger transportation across the lands they're assigned to, often using underground Stagways.</description>
    <statBases>
      <MoveSpeed>7.2</MoveSpeed>
      <MarketValue>6000</MarketValue>
      <ComfyTemperatureMin>-73</ComfyTemperatureMin>
      <ComfyTemperatureMax>38</ComfyTemperatureMax>
      <ArmorRating_Sharp>0.80</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.10</ArmorRating_Heat>
    </statBases>
    <uiIconScale>1.75</uiIconScale>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>EggStagUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggStagFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>horn</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>23</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>28</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>left foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <herdAnimal>false</herdAnimal>
      <body>QuadrupedAnimalWithHoovesAndHorn</body>
      <herdMigrationAllowed>false</herdMigrationAllowed>
      <baseHungerRate>3.5</baseHungerRate>
      <fleshType>Insectoid</fleshType>
      <baseBodySize>5.0</baseBodySize>
      <bloodDef>Filth_BloodInsect</bloodDef>
      <baseHealthScale>5.5</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <useMeatFrom>Megaspider</useMeatFrom>
      <gestationPeriodDays>48</gestationPeriodDays>
      <wildness>0.98</wildness>
      <trainability>Advanced</trainability>
      <lifeExpectancy>150</lifeExpectancy>
      <packAnimal>true</packAnimal>
      <manhunterOnTameFailChance>0.01</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.30</manhunterOnDamageChance>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>1.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>3.2</minAge>
          <soundWounded>Stag_Wounded</soundWounded>
          <soundDeath>Stag_Death</soundDeath>
          <soundCall>Stag_Call</soundCall>
          <soundAngry>Stag_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalExotic</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase">
    <defName>TRAHS_Stag</defName>
    <label>stag</label>
    <race>TRAHS_Stag</race>
    <combatPower>500</combatPower>
    <canArriveManhunter>false</canArriveManhunter>
    <ecoSystemWeight>1</ecoSystemWeight>
    <wildGroupSize>1</wildGroupSize>
    <lifeStages>
      <li>
        <label>stag pup</label>
        <bodyGraphicData>
          <texPath>Things/TRAHS/Pawn/Stag/Stag</texPath>
          <drawSize>1.8</drawSize>
          <shadowData>
            <volume>(0.4, 0.3, 0.3)</volume>
            <offset>(0,0,-0.2)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/TRAHS/Pawn/Stag/Dessicated_Stag</texPath>
          <drawSize>1.8</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/TRAHS/Pawn/Stag/Stag</texPath>
          <drawSize>2.6</drawSize>
          <shadowData>
            <volume>(0.6, 0.45, 0.45)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/TRAHS/Pawn/Stag/Dessicated_Stag</texPath>
          <drawSize>2.6</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/TRAHS/Pawn/Stag/Stag</texPath>
          <drawSize>3.8</drawSize>
          <shadowData>
            <volume>(0.8, 0.6, 0.6)</volume>
            <offset>(0,0,-0.3)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/TRAHS/Pawn/Stag/Dessicated_Stag</texPath>
          <drawSize>3.8</drawSize>
        </dessicatedBodyGraphicData>
        <butcherBodyPart>
          <bodyPartGroup>HornAttackTool</bodyPartGroup>
          <thing>StagHorn</thing>
        </butcherBodyPart>
      </li>
    </lifeStages>
  </PawnKindDef>

</Defs>