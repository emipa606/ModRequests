<Defs>
<!--==============================-->
<!--========== Old Nail ==========-->
<!--==============================-->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>TRAHS_OldNail</defName>
    <label>Old Nail</label>
    <techLevel>Neolithic</techLevel>
    <description>A traditional weapon of Hallownest. Its blade is blunt with age and wear.</description>
    <graphicData>
      <texPath>Things/TRAHS/Nails/OldNail</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.6</uiIconScale>
    <weaponTags>
      <li>TRAHS_Nail</li>
    </weaponTags>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <Mass>0.4</Mass>
      <MarketValue>50</MarketValue>
    </statBases>
    <costList>
      <Steel>25</Steel>
    </costList>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <burnableByRecipe>false</burnableByRecipe>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

