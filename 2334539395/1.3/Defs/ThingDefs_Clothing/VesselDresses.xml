<?xml version="1.0" encoding="utf-8"?>
<Defs>
<!--====================================================-->
<!--==================== Dark Cloak ====================-->
<!--====================================================-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>TRAHS_DarkCloak</defName>
    <label>dark cloak</label>
    <description>An elegant black cloak, often worn by Vessels.</description>
    <graphicData>
      <texPath>Things/TRAHS/Clothing/DarkCloak/DarkCloak</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <costStuffCount>80</costStuffCount>
    <researchPrerequisites>
      <li>ComplexClothing</li>
    </researchPrerequisites>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>1.4</Mass>
      <StuffEffectMultiplierInsulation_Cold>0.90</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.99</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.8</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/TRAHS/Clothing/DarkCloak/DarkCloak</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>TRAHSVessel</li>
      </tags>
    </apparel>
  </ThingDef>

