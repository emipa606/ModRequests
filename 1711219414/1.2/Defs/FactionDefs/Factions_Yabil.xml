<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef>
		<defName>YabilColony</defName>
		<label>Yabil collective</label>
		<description>A colony of mischevious Yabils. May or may not wish to annihilate everything you love.</description>
		<colorSpectrum>
			<li>(0.23, 1.0, 0.23)</li>
			<li>(0.45, 0.25, 0.66)</li>
			<li>(0.66, 0.45, 0.33)</li>
			<li>(0.35, 1, 0.66)</li>
		</colorSpectrum>
		<startingGoodwill>
			<min>-30</min>
			<max>35</max>
		</startingGoodwill>
		<naturalColonyGoodwill>
			<min>-40</min>
			<max>50</max>
		</naturalColonyGoodwill>
		<goodwillDailyGain>0.20</goodwillDailyGain>
		<goodwillDailyFall>0.40</goodwillDailyFall>
		<pawnSingular>Yabil</pawnSingular>
		<pawnsPlural>Yabils</pawnsPlural>
		<listOrderPriority>20</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<canStageAttacks>true</canStageAttacks>
		<factionIconPath>World/YabilCamp</factionIconPath>
		<geneticVariance>0.5</geneticVariance>
		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<techLevel>Industrial</techLevel>
		<backstoryFilters>
			<li>
				<categories>
					<li>Offworld</li>
				</categories>
			</li>
		</backstoryFilters>
		<hairTags>
			<li>Rural</li>
		</hairTags>
		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>Caravan_Outlander_Exotic</li>
			<li>Caravan_Outlander_PirateMerchant</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Outlander_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Outlander_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>
			<min>-40</min>
			<max>45</max>
		</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, ranged with melee mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<Yabil_Grunt>5</Yabil_Grunt>
					<Yabil_Thwacker>5</Yabil_Thwacker>
					<Yabil_Gunner>10</Yabil_Gunner>
					<Yabil_Veteran>10</Yabil_Veteran>
					<Yabil_Scorcher>10</Yabil_Scorcher>
					<Yabil_Demo>5</Yabil_Demo>
					<Yabil_Boss>3</Yabil_Boss>
				</options>
			</li>
			<li>
				<!-- Normal fights, ranged only -->
				<kindDef>Combat</kindDef>
				<commonality>60</commonality>
				<options>
					<Yabil_Gunner>10</Yabil_Gunner>
					<Yabil_Veteran>10</Yabil_Veteran>
					<Yabil_Scorcher>10</Yabil_Scorcher>
					<Yabil_Boss>3</Yabil_Boss>
				</options>
			</li>
			<li>
				<!-- Normal fights, melee only -->
				<kindDef>Combat</kindDef>
				<commonality>60</commonality>
				<options>
					<Yabil_Grunt>10</Yabil_Grunt>
					<Yabil_Thwacker>10</Yabil_Thwacker>
					<Yabil_Gunner>10</Yabil_Gunner>
					<Yabil_Boss>5</Yabil_Boss>
				</options>
			</li>
			<li>
				<!-- Peaceful -->
				<kindDef>Peaceful</kindDef>
				<options>
					<VillagerYabil>20</VillagerYabil>
					<Yabil_Grunt>10</Yabil_Grunt>
					<Yabil_Gunner>10</Yabil_Gunner>
					<Yabil_Veteran>10</Yabil_Veteran>
					<Yabil_Thwacker>5</Yabil_Thwacker>
					<Yabil_Boss>3</Yabil_Boss>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<Yabil_Trader>1</Yabil_Trader>
				</traders>
				<carriers>
					<Muffalo>6</Muffalo>
					<Dromedary>5</Dromedary>
					<Alpaca>2.5</Alpaca>
					<Elephant>1</Elephant>
				</carriers>
				<guards>
					<Yabil_Thwacker>7</Yabil_Thwacker>
					<Yabil_Gunner>10</Yabil_Gunner>
					<Yabil_Veteran>10</Yabil_Veteran>
					<Yabil_Scorcher>10</Yabil_Scorcher>
					<Yabil_Grunt>7</Yabil_Grunt>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<Yabil_Grunt>7</Yabil_Grunt>
					<Yabil_Gunner>10</Yabil_Gunner>
					<Yabil_Veteran>10</Yabil_Veteran>
					<Yabil_Scorcher>10</Yabil_Scorcher>
					<VillagerYabil>7</VillagerYabil>
					<Yabil_Boss>10</Yabil_Boss>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementTexturePath>World/YabilCamp</settlementTexturePath>
	</FactionDef>
</Defs>