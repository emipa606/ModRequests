<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>XFNuBl_Deficiency_Carbohydrate</defName>
        <label>Carbohydrate unbalance</label>
        <defaultLabelColor>(0.7, 0.37, 0.04)</defaultLabelColor>
        <description>Carbohydrate unbalance</description>
        <makesSickThought>true</makesSickThought>
        <hediffClass>Hediff</hediffClass>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.9</setMax>
                    </li>
                </capMods>
                <statFactors>
                    <WorkSpeedGlobal>0.75</WorkSpeedGlobal>
                </statFactors>
                <restFallFactorOffset>2</restFallFactorOffset>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>XFNuBl_Deficiency_Protein</defName>
        <label>Protein unbalance</label>
        <defaultLabelColor>(0.5, 0.26, 0.26)</defaultLabelColor>
        <description>Protein unbalance</description>
        <makesSickThought>true</makesSickThought>
        <hediffClass>Hediff</hediffClass>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.1</offset>
                    </li>
                </capMods>
                <statFactors>
                    <WorkSpeedGlobal>0.9</WorkSpeedGlobal>
                    <InjuryHealingFactor>0.45</InjuryHealingFactor>
                    <ImmunityGainSpeed>0.9</ImmunityGainSpeed>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>XFNuBl_Deficiency_DietaryFiber</defName>
        <label>Dietary fiber unbalance</label>
        <defaultLabelColor>(0.4, 0.4, 0.2)</defaultLabelColor>
        <description>Dietary fiber unbalance</description>
        <makesSickThought>true</makesSickThought>
        <hediffClass>Hediff</hediffClass>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Metabolism</capacity>
                        <offset>-0.4</offset>
                    </li>
                </capMods>
                <hungerRateFactorOffset>+0.2</hungerRateFactorOffset>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>XFNuBl_Deficiency_Vitamin</defName>
        <label>scurvy</label>
        <defaultLabelColor>(0.32, 0.43, 0.65)</defaultLabelColor>
        <description>scurvy</description>
        <makesSickThought>true</makesSickThought>
        <hediffClass>TowerNutritionBalance.Hediff_Scurvy</hediffClass>
        <stages>
            <li>
                <statFactors>
                    <ImmunityGainSpeed>0.1</ImmunityGainSpeed>
                </statFactors>
            </li>
        </stages>
    </HediffDef>
</Defs>