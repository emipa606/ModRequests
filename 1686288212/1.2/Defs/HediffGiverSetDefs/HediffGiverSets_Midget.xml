   <HediffGiverSetDef>
      <defName>WoW_Midget_HediffGiver</defName>
      <hediffGivers>
         <!-- Environmental -->
         <li Class="HediffGiver_Bleeding">
            <hediff>BloodLoss</hediff>
         </li>
