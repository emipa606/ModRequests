<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<!-- ============================ Goblin Base ========================== -->
	<PawnKindDef Name="WoW_Goblin_PawnkindBase" Abstract="True">
		<defaultFactionType>Horde</defaultFactionType>
		<race>WoW_Goblin</race>
		<chemicalAddictionChance>0.03</chemicalAddictionChance>
		<baseRecruitDifficulty>0.90</baseRecruitDifficulty>
		<invNutrition>2.55</invNutrition>
		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>WoW_Orc_Backstory</li>
				</categories>
			</li>
		</backstoryFiltersOverride>
		<apparelAllowHeadgearChance>0.5</apparelAllowHeadgearChance>
		<apparelTags>
			<li>WoW_Tribal_Apparel</li>
			<li>WoW_Medieval_Apparel</li>
		</apparelTags>
		<apparelColor>(156,36,36)</apparelColor>
	</PawnKindDef>
	<!-- ============================ Goblin Base ========================== -->
	
	<!-- ============================ Goblin Player Pawn ========================== -->
	<PawnKindDef ParentName="WoW_Goblin_PawnkindBase">
		<defName>WoWGoblin</defName>
		<label>goblin colonist</label>
		<combatPower>50</combatPower>
		<isFighter>false</isFighter>
		<defaultFactionType>PlayerColony</defaultFactionType>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<forceNormalGearQuality>true</forceNormalGearQuality>
		<apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
		<apparelMoney>
			<min>350</min>
			<max>500</max>
		</apparelMoney>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
	</PawnKindDef>
	<!-- ============================ Goblin Player Pawn ========================== -->
	
</Defs>