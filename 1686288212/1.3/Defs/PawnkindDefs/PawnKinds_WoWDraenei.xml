<Defs>
	<!-- ============================ Draenei Base ========================== -->
	<PawnKindDef Name="WoW_Draenei_PawnkindBase" Abstract="True">
		<defaultFactionType>Draenei</defaultFactionType>
		<race>WoW_Draenei</race>
		<baseRecruitDifficulty>0.95</baseRecruitDifficulty>
		<invNutrition>2.55</invNutrition>
		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>WoW_Draenei_Backstory</li>
				</categories>
			</li>
		</backstoryFiltersOverride>
		<apparelAllowHeadgearChance>0.5</apparelAllowHeadgearChance>
		<apparelTags>
			<li>WoW_Medieval_Apparel</li>
		</apparelTags>
		<apparelColor>(118,98,145)</apparelColor>
		<initialResistanceRange>10~20</initialResistanceRange>
		<initialWillRange>0~5</initialWillRange>
	</PawnKindDef>
	<!-- ============================ Draenei Base ========================== -->
	
	<!-- ============================ Draenei Player Pawn ========================== -->
	<PawnKindDef ParentName="WoW_Draenei_PawnkindBase">
		<defName>WoWDraenei</defName>
		<label>draenei colonist</label>
		<combatPower>50</combatPower>
		<isFighter>false</isFighter>
		<defaultFactionType>PlayerColony</defaultFactionType>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<forceNormalGearQuality>true</forceNormalGearQuality>
		<apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
		<apparelMoney>
			<min>350</min>
			<max>500</max>
		</apparelMoney>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
