<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Draenei -->
  <HediffGiverSetDef>
    <defName>WoW_Draenei_HediffGiver</defName>
    <hediffGivers>
      
      <!-- Environmental -->
      <li Class="HediffGiver_Bleeding">
        <hediff>BloodLoss</hediff>
      </li>
      <li Class="HediffGiver_Hypothermia">
        <hediff>Hypothermia</hediff>
