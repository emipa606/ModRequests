<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef Name="ShadowLegendsBase" ParentName="FactionBase">
		<defName>ShadowLegends</defName>
		<label>Shadow Legends</label>
    <description>Watch out, you might just get a Raid from Shadow Legends.</description>
    <pawnSingular>shadow legend</pawnSingular>
	<pawnsPlural>shadow legends</pawnsPlural>
	<listOrderPriority>19</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
	<maxCountAtGameStart>4</maxCountAtGameStart>
	<fixedName>Shadow Legends</fixedName>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Raider</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/PirateOutpost</factionIconPath>
    <colorSpectrum>
      <li>(0.45, 0.05, 0.05)</li>
      <li>(0.80, 0.25, 0.05)</li>
    </colorSpectrum>
	<permanentEnemy>true</permanentEnemy>
    <allowedCultures><li>Kriminul</li></allowedCultures>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
    </requiredMemes>
    <structureMemeWeights>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
    </structureMemeWeights>
	<xenotypeSet>
      <xenotypeChances>
        <Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.025</Neanderthal>
        <Hussar MayRequire="Ludeon.RimWorld.Biotech">0.05</Hussar>
        <Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0.05</Dirtmole>
        <Impid MayRequire="Ludeon.RimWorld.Biotech">0.05</Impid>
        <Pigskin MayRequire="Ludeon.RimWorld.Biotech">0.1</Pigskin>
      </xenotypeChances>
    </xenotypeSet>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>25</configurationListOrderPriority>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
	<techLevel>Industrial</techLevel>
	<backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
        <commonality>0.50</commonality>
      </li>
	  <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>0.15</commonality>
      </li>
      <li>
        <categories>
          <li>Pirate</li>
        </categories>
        <commonality>0.35</commonality>
      </li>
    </backstoryFilters>
	<caravanTraderKinds>
	  <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
      <li>Caravan_Outlander_PirateMerchant</li>
    </caravanTraderKinds>
	<visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-30</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
	<maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
		<kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
		<Villager>5</Villager>
          <Town_Guard>10</Town_Guard>
          <Grenadier_Destructive>1.5</Grenadier_Destructive>
          <Mercenary_Slasher>7</Mercenary_Slasher>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>10</Mercenary_Elite>
          <Town_Councilman>10</Town_Councilman>
        </options>
      </li>
	  <li>
        <!-- Peaceful -->
        <kindDef>Peaceful</kindDef>
        <options>
          <Villager>20</Villager>
          <Town_Guard>10</Town_Guard>
          <Town_Councilman>10</Town_Councilman>
        </options>
      </li>
	  <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Town_Trader>1</Town_Trader>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>1</Elephant>
        </carriers>
        <guards>
			<Villager>3</Villager>
          <Town_Guard>10</Town_Guard>
          <Grenadier_Destructive>1.5</Grenadier_Destructive>
          <Mercenary_Slasher>7</Mercenary_Slasher>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>10</Mercenary_Elite>
		</guards>
      </li>
      <li>
				<!-- Base defense -->
        <kindDef>Settlement</kindDef>
        <options>
          <Thrasher>3</Thrasher>
          <Pirate>10</Pirate>
          <Grenadier_Destructive>2</Grenadier_Destructive>
          <Mercenary_Slasher>3</Mercenary_Slasher>
          <Mercenary_Sniper>10</Mercenary_Sniper>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>10</Mercenary_Elite>
          <PirateBoss>10</PirateBoss>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>

</Defs>