<Defs>

<!-- Dolabra -->
<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>KIT_MeleeWeapon_Dolabra</defName>
    <label>dolabra</label>
    <description>This versatile axe can work as a weapon and as a tool at the same time. Needs some muscles to work with, but makes digging through mountains and killing some raiders overall more comfortable.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/WeaponMelee/Dolabra</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>60</costStuffCount>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <equippedStatOffsets>
      <MiningSpeed>0.3</MiningSpeed>
    </equippedStatOffsets>
    <equippedAngleOffset>-45</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
	<weaponTags>
		<li>MedievalMeleeAdvanced</li>
	</weaponTags>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>13</power>
		<armorPenetration>0.5</armorPenetration>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>16</power>
		<armorPenetration>0.35</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
	  <recipeUsers>
		<li>FueledSmithy</li>
		<li>ElectricSmithy</li>
	  </recipeUsers>
	  <researchPrerequisite>Smithing</researchPrerequisite>
			<skillRequirements>
			<Crafting>6</Crafting>
	  </skillRequirements>
	</recipeMaker>
</ThingDef>

