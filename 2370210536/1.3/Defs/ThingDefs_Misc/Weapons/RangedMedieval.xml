<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Plumbatae -->
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>KIT_WeaponRanged_Plumbatae</defName>
    <label>plumbatae</label>
    <description>A handful of darts. Can inflict injuries in close range. Simple but effective.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/WeaponRanged/Plumbatae</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Grenade</soundInteract>
    <weaponClasses>
      <li>RangedLight</li>
      <li>ShortShots</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>3600</WorkToMake>
      <Mass>1</Mass>
      <AccuracyTouch>0.8</AccuracyTouch>
      <AccuracyShort>0.6</AccuracyShort>
      <AccuracyMedium>0.4</AccuracyMedium>
      <AccuracyLong>0.2</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <smeltable>true</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
	<stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
	<costStuffCount>30</costStuffCount>
    <weaponTags>
      <li>MedievalRangedBasic</li>
    </weaponTags>
    <recipeMaker>
      <recipeUsers>
		<li>FueledSmithy</li>
		<li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Smithing</researchPrerequisite>
		  <skillRequirements>
			  <Crafting>2</Crafting>
	    </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>KIT_Plumbatae</defaultProjectile>
        <warmupTime>1.8</warmupTime>
        <range>14.9</range>
        <soundCast>ThrowGrenade</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.4</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>KIT_Plumbatae</defName>
    <label>plumbatae</label>
    <graphicData>
      <texPath>Things/Projectile/PlumbataeThrown</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>14</damageAmountBase>
      <arcHeightFactor>1.2</arcHeightFactor>
      <shadowSize>0.5</shadowSize>
      <speed>16</speed>
    </projectile>
  </ThingDef>

</Defs>