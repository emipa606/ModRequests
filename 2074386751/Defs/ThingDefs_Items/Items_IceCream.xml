<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--======================= Ice Cream high ============================-->

  <HediffDef>
    <defName>IceCreamHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>icy treat</label>
    <description>A positive effect caused by eating ice cream.</description>
    <labelNoun>effects of consuming ice cream</labelNoun>
    <maxSeverity>1.5</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-4.5</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
          <label>cooled</label>
          <statOffsets>
            <ComfyTemperatureMax>+3</ComfyTemperatureMax>
            <ComfyTemperatureMin>+6</ComfyTemperatureMin>
          </statOffsets>
        </li>
      </stages>
  </HediffDef>

	
	<!-- Berry Sorbet  START  -->
	<ThingDef ParentName="ResourceBase">
    <defName>BerrySorbet</defName>
    <label>berry sorbet</label>
    <description>A sweet, icy treat made from sugar and berries.</description>
    <graphicData>
      <texPath>BerrySorbet</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.88</drawSize>
    </graphicData>
	<equippedAngleOffset>-150</equippedAngleOffset>
    <rotatable>false</rotatable>
    <stackLimit>75</stackLimit>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>5</MarketValue>
      <Mass>0.075</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
      <Nutrition>0.7</Nutrition>
    </statBases>
    <tickerType>Rare</tickerType>
    <thingCategories>
      <li>IceCream</li>
    </thingCategories>
    <ingestible>
	  <tasteThought>AteBerrySorbet</tasteThought>
      <preferability>RawTasty</preferability>
      <foodType>AnimalProduct</foodType>
      <joy>0.20</joy>
      <joyKind>Gluttonous</joyKind>
      <drugCategory>Social</drugCategory>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <ingestSound>Meal_Eat</ingestSound>
      <chairSearchRadius>25</chairSearchRadius>
	  <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>IceCreamHigh</hediffDef>
          <severity>1</severity>
        </li>
      </outcomeDoers>
    </ingestible>
	<tradeability>All</tradeability>
	<comps>
		<li Class="CompProperties_Rottable">
			<daysToRotStart>1</daysToRotStart>
			<rotDestroys>true</rotDestroys>
		</li>
		<li Class="CompProperties_Drug">
			<listOrder>1</listOrder>
		</li>
	</comps>
	</ThingDef>	
	<!-- END  -->
	
