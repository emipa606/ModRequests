<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
  
  <Operation Class="PatchOperationFindMod">
	<mods>
		<li>RimCuisine 2 Core (Continued)</li>
	</mods>
	
	<!-- If you DO NOT have RC2 installed... -->
	
	<nomatch Class="PatchOperationSequence">
	<success>Always</success>
	
	<operations>
	

		<li Class="PatchOperationAdd">
		<xpath>Defs</xpath>
		<value>

	<RecipeDef>
	<defName>Brew_Sugar</defName>
	<label>boil cane down to sugar</label>
	<description>boiling cane down to sugar</description>
	<jobString>boiling cane down to sugar.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
	<effectWorking>Cook</effectWorking>
	<soundWorking>Recipe_Brewing</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
        <li>ElectricStove</li>
        <li>FueledStove</li>
    </recipeUsers>
	<workAmount>300</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>Canestalks</li>
	      </thingDefs>
	    </filter>
	    <count>20</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>Canestalks</li>
	  </thingDefs>
	</fixedIngredientFilter>
	<products>
	  <Sugar>5</Sugar>
	</products>
	<workSkill>Cooking</workSkill>
		<skillRequirements>
			<Cooking>6</Cooking>
	     </skillRequirements>
  </RecipeDef>

  <RecipeDef>
	<defName>Bulk_Brew_Sugar</defName>
	<label>boil cane down to sugar in bulk</label>
	<description>boiling cane down to sugar in bulk</description>
	<jobString>boiling cane down to sugar in bulk.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
	<effectWorking>Cook</effectWorking>
	<soundWorking>Recipe_Brewing</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
        <li>ElectricStove</li>
        <li>FueledStove</li>
    </recipeUsers>
	<workAmount>2000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>Canestalks</li>
	      </thingDefs>
	    </filter>
	    <count>200</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>Canestalks</li>
	  </thingDefs>
	</fixedIngredientFilter>
	<products>
	  <Sugar>50</Sugar>
	</products>
	<workSkill>Cooking</workSkill>
		<skillRequirements>
			<Cooking>8</Cooking>
	     </skillRequirements>
  </RecipeDef>
		
	
		</value>
		</li>

	</operations>
	
	</nomatch>
  </Operation>
  
  
</Patch>