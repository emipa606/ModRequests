<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <SoundDef>
        <defName>BRCE_BinocularsRequest</defName>
        <sustain>True</sustain>
        <context>MapOnly</context>
        <maxSimultaneous>2</maxSimultaneous>
        <priorityMode>PrioritizeNearest</priorityMode>


        <subSounds>
            <li>
                <muteWhenPaused>True</muteWhenPaused>
                <grains>
                    <li Class="AudioGrain_Folder">
                        <clipPath>Binoculars/FireMissionRequest</clipPath>
                    </li>
                </grains>
                <volumeRange>14~14</volumeRange>
                <sustainLoopDurationRange>300~300</sustainLoopDurationRange>
            </li>
        </subSounds>
    </SoundDef>

    <SoundDef>
        <defName>BRCE_BinocularsConfirmed</defName>
        <context>MapOnly</context>
        <maxSimultaneous>2</maxSimultaneous>
        <subSounds>
            <li>
                <muteWhenPaused>True</muteWhenPaused>
                <grains>
                    <li Class="AudioGrain_Folder">
                        <clipPath>Binoculars/FireMissionConfirmed</clipPath>
                    </li>
                </grains>
                <volumeRange>10~14</volumeRange>
            </li>
        </subSounds>
    </SoundDef>

    <SoundDef>
        <defName>BRCE_BinocularsEquip</defName>
        <context>MapOnly</context>
        <maxSimultaneous>1</maxSimultaneous>
        <subSounds>
            <li>
                <grains>
                    <li Class="AudioGrain_Clip">
                        <clipPath>Binoculars/BinocularsEquip</clipPath>
                    </li>
                </grains>
                <volumeRange>10~14</volumeRange>
                <pitchRange>0.5~1.0</pitchRange>
            </li>
        </subSounds>
    </SoundDef>

</Defs>