<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Mechanoids</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			

			<operations>

				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VFE_Mechanoids_Raider" or defName="VFE_Mechanoids_Combat"]/comps/li</xpath>
					<value>
						<canPickupWeapons>true</canPickupWeapons>
					</value>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="VFE_Mechanoids_RaiderBase" or defName="VFE_Mechanoids_CombatBase"]/comps/li/spawnWithWeapon</xpath>


				</li>
				
			
			</operations>
			
		</match>
	</Operation>
</Patch>