<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HH_LMG</defName>
    <label>H/19</label>
    <description>Hellhound machine guns are usually big in one way or another, and the H/19 is the same. Feauring a overall long construction, the H/19 fires relativly quick.</description>
    <graphicData>
      <texPath>H19</texPath>
      <graphicClass>Graphic_Single</graphicClass>
			<drawSize>2</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>36500</WorkToMake>
      <Mass>10.5</Mass>
      <AccuracyTouch>0.35</AccuracyTouch>
      <AccuracyShort>0.44</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HH_LMG</defaultProjectile>
        <warmupTime>2.15</warmupTime>
        <range>27.9</range>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <burstShotCount>7</burstShotCount>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<weaponTags>
		<li>HellhoundH</li>
	</weaponTags>
	<comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
      </li>
    </comps>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HH_LMG</defName>
    <label>H/19 bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>9</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>46</speed>
    </projectile>
  </ThingDef>
  
</Defs>