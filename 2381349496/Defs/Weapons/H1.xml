<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HH_OldBattleRifle</defName>
    <label>H/1</label>
    <description>Precursor to the H/14, but is still used because of the high calibration ammunition it uses. It even makes a funny ping noise!</description>
    <graphicData>
      <texPath>H1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>HHPing</soundInteract>
    <recipeMaker>
	  <recipeUsers>
		<li>TableMachining</li>
	  </recipeUsers>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>4.25</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>85</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HH_OldBattleRifle</defaultProjectile>
        <warmupTime>1.75</warmupTime>
        <range>33.9</range>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
	<weaponTags>
		<li>HellhoundR</li>
	</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HH_OldBattleRifle</defName>
    <label>H/1 bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>60</speed>
    </projectile>
  </ThingDef>
</Defs>