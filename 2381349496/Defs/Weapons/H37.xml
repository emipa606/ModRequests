<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HH_PumpShotgun</defName>
    <label>H/37</label>
    <description>12 Gauge shotgun used By Hellhounds in CQC, though they prefer to use their claws at that range.</description>
    <graphicData>
      <texPath>H37</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>2.9</Mass>
      <AccuracyTouch>0.86</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.15</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Shotgun</defaultProjectile>
        <warmupTime>0.8</warmupTime>
        <range>13.9</range>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
	<weaponTags>
		<li>HellhoundH</li>
	</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
</Defs>