<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HH_HMG</defName>
    <label>H/60</label>
    <description>The biggest gun usable by a human in the Hellhound armoury, the H/60 is a beast of a machine gun, able to not only suppress, but also destroy anything it hits.</description>
    <graphicData>
      <texPath>H60</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>46500</WorkToMake>
      <Mass>15</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.47</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>2.75</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>130</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HH_HMG</defaultProjectile>
        <warmupTime>2.5</warmupTime>
        <range>25.9</range>
        <ticksBetweenBurstShots>11</ticksBetweenBurstShots>
        <burstShotCount>6</burstShotCount>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>11</muzzleFlashScale>
      </li>
    </verbs>
	<weaponTags>
		<li>HellhoundH</li>
	</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HH_HMG</defName>
    <label>H/60 bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <speed>46</speed>
    </projectile>
  </ThingDef>
  
</Defs>