<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HH_FlareGun</defName>
    <label>H/8I</label>
    <description>Cheap Hellhound flare gun that fires incendiary flares. Used both by officers and flamers alike. Inacurate, with a small blast radius.</description>
    <graphicData>
      <texPath>H8I</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <Mass>1.8</Mass>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HH_FlareGun</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>17.9</range>
        <forcedMissRadius>2.9</forcedMissRadius>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>17</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
	<weaponTags>
		<li>HellhoundF</li>
		<li>HellhoundO</li>
	</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HH_FlareGun</defName>
    <label>H/8I Flare</label>
    <graphicData>
      <texPath>Things/Projectile/LauncherShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(254,189,58)</color>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>35</speed>
      <damageDef>Flame</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionRadius>0.1</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.6</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <arcHeightFactor>0.2</arcHeightFactor>
      <shadowSize>0.6</shadowSize>
    </projectile>
  </ThingDef>
</Defs>