<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<!-- Powerarmor Helmet -->

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName = "Apparel_PowerArmorHelmet"]/statBases/Insulation_Cold</xpath>
		<value>
			<Insulation_Cold>30</Insulation_Cold>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName = "Apparel_PowerArmorHelmet"]/statBases/Insulation_Heat</xpath>
		<value>
			<Insulation_Heat>30</Insulation_Heat>
		</value>
	</Operation>

	<!-- Power Armor -->

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName = "Apparel_PowerArmor"]/statBases/Insulation_Heat</xpath>
		<value>
			<Insulation_Heat>10</Insulation_Heat>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName = "Apparel_PowerArmor"]/statBases/Insulation_Cold</xpath>
		<value>
			<Insulation_Cold>120</Insulation_Cold>
		</value>
	</Operation>

</Patch>
