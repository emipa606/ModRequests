<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[1]/options</xpath>
    <!-- Outlander "normal" group -->
    <value>
      <!-- Pawnkinds from your race, keep points down low to avoid making your pawns a majority -->
      <!-- The more rare, the lower your points should be -->
      <Supermutant_Villager>1.5</Supermutant_Villager>
      <Supermutant_Town_Guard>3</Supermutant_Town_Guard>
      <Supermutant_Grenadier_Destructive>0.25</Supermutant_Grenadier_Destructive>
      <Supermutant_Mercenary_Slasher>2.5</Supermutant_Mercenary_Slasher>
      <Supermutant_Mercenary_Gunner>3</Supermutant_Mercenary_Gunner>
      <Supermutant_Mercenary_Elite>3</Supermutant_Mercenary_Elite>
      <Supermutant_Town_Councilman>3</Supermutant_Town_Councilman>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[2]/options</xpath>
    <!-- Outlander "normal" group -->
    <value>
      <!-- Pawnkinds from your race, keep points down low to avoid making your pawns a majority -->
      <!-- The more rare, the lower your points should be -->
      <Supermutant_Villager>5</Supermutant_Villager>
      <Supermutant_Town_Guard>3</Supermutant_Town_Guard>
      <Supermutant_Town_Councilman>3</Supermutant_Town_Councilman>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[3]/guards</xpath>
    <!-- Outlander Caravan guard group -->
    <value>
      <Supermutant_Town_Guard>3</Supermutant_Town_Guard>
      <Supermutant_Town_Councilman>3</Supermutant_Town_Councilman>
      <Supermutant_Mercenary_Slasher>1</Supermutant_Mercenary_Slasher>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[3]/traders</xpath>
    <!-- Outlander Caravan guard group -->
    <value>
      <Supermutant_Town_Trader>0.33</Supermutant_Town_Trader>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[4]/options</xpath>
    <!-- Outlander base group -->
    <value>
      <Supermutant_Villager>1</Supermutant_Villager>
      <Supermutant_Town_Guard>3</Supermutant_Town_Guard>
      <Supermutant_Grenadier_Destructive>0.25</Supermutant_Grenadier_Destructive>
      <Supermutant_Mercenary_Slasher>2.5</Supermutant_Mercenary_Slasher>
      <Supermutant_Mercenary_Gunner>3</Supermutant_Mercenary_Gunner>
      <Supermutant_Mercenary_Elite>3</Supermutant_Mercenary_Elite>
      <Supermutant_Town_Councilman>10</Supermutant_Town_Councilman>
    </value>
  </Operation>
</Patch>