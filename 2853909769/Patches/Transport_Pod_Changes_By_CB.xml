<?xml version="1.0" encoding="UTF-8"?>
<Patch>
        <!--                Pod Launcher = The Building                    -->
    <Operation Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="PodLauncher"]/comps/li[@Class="CompProperties_Refuelable"]/fuelCapacity</xpath>
            <value>
                <fuelCapacity>500.0</fuelCapacity>
            </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="PodLauncher"]/comps/li[@Class="CompProperties_Refuelable"]/initialConfigurableTargetFuelLevel</xpath>
            <value>
                <initialConfigurableTargetFuelLevel>100</initialConfigurableTargetFuelLevel>
            </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="PodLauncher"]/graphicData/drawSize</xpath>
            <value>
                <drawSize>(1.75,1.5)</drawSize>
            </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="PodLauncher"]/size</xpath>
            <value>
                <size>(1,1)</size>
            </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="PodLauncher"]/uiIconScale</xpath>
            <value>
                <uiIconScale>0.75</uiIconScale>
            </value>
    </Operation>
    
    
    <!--                Transport pods = The transport device you launch              -->
    <Operation Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="TransportPod"]/comps/li[@Class="CompProperties_Transporter"]</xpath>
            <value>
                <massCapacity>500</massCapacity>
            </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="TransportPod"]/graphicData/drawSize</xpath>
            <value>
                <drawSize>(1.65,1.65)</drawSize>
            </value>
    </Operation>
</Patch>



