<Defs>
<RecipeDef>
  <defName>MakeBricksSlow</defName> 
  <label>make 12 bricks</label> 
  <description>Mold and fire clay to make bricks.</description> 
  <jobString>Making bricks.</jobString> 
  <workSpeedStat>SmeltingSpeed</workSpeedStat> 
  <workSkillLearnFactor>0.25</workSkillLearnFactor> 
  <effectWorking>Smelt</effectWorking> 
  <soundWorking>Recipe_Smelt</soundWorking> 
  <workAmount>3000</workAmount> 
  <ingredients>
	<li>
		<filter>
			<thingDefs>
				<li>RFFClay</li> 
			</thingDefs>
		</filter>
		<count>1</count> 
	</li>
  </ingredients>
  <products>
  <RFFBricks>12</RFFBricks> 
  </products>
  <fixedIngredientFilter>
  <thingDefs>
  <li>RFFClay</li> 
  </thingDefs>
  </fixedIngredientFilter>
  <workSkill>Crafting</workSkill>
  <recipeUsers>
	<li>Campfire</li>
  </recipeUsers>
  </RecipeDef>
  
