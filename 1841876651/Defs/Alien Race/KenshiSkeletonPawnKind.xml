<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <PawnKindDef>
    <defName>Kenshi_SkeletonPlayer</defName>
    <race>Kenshi_Skeleton</race>
    <combatPower>30</combatPower>
    <isFighter>false</isFighter>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <forceNormalGearQuality>true</forceNormalGearQuality>
    <label>skeleton</label>
    <defaultFactionType>PlayerTribe</defaultFactionType>
    <backstoryFiltersOverride>
        <li>
            <categories>
                <li>SkeletonBackstoryAncient</li>
            </categories>
        </li>
    </backstoryFiltersOverride>
    <chemicalAddictionChance>0.0</chemicalAddictionChance>
    <apparelTags>
      <li>Neolithic</li>
    </apparelTags>
    <apparelMoney>
      <min>0</min>
      <max>200</max>
    </apparelMoney>
    <backstoryCryptosleepCommonality>15.0</backstoryCryptosleepCommonality>
    <techHediffsMoney>
      <min>50</min>
      <max>300</max>
    </techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <techHediffsChance>0.02</techHediffsChance>

    <initialWillRange>0~0</initialWillRange>
    <initialResistanceRange>9~15</initialResistanceRange>

  </PawnKindDef>

<!--Backstories.................................................................................-->

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonStandardBackground</defName>
    <title>Ancient Skeleton</title>
    <titleShort>Ancient Skeleton</titleShort>
    <baseDescription>This skeleton was born or built long ago, and little is known about its history. Its memories have long since faded.</baseDescription>
    <slot>Childhood</slot>
    <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground1</defName>
    <title>Wanderer</title>
    <titleShort>Wanderer</titleShort>
    <baseDescription>This skeleton wandered the world searching for a new home, but ultimately decided that a nomad's life was preferable. It visits its old home ocassionally, but never stays for long.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
    <skillGains>
      <li>
        <defName>Social</defName>
        <amount>4</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground2</defName>
    <title>Database</title>
    <titleShort>Database</titleShort>
    <baseDescription>This skeleton acted as a mobile database for its group. Its memory banks have deteriorated, but it retains its skill at learning.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
    <skillGains>
      <li>
        <defName>Intellectual</defName>
        <amount>4</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground3</defName>
    <title>Warrior</title>
    <titleShort>Warrior</titleShort>
    <baseDescription>This skeleton was a fearsome warrior once, and has kept its brutal combat skills even as it forgot its reason for fighting.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
        <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>4</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>3</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground4</defName>
    <title>Scavenger</title>
    <titleShort>Scavenger</titleShort>
    <baseDescription>This skeleton has been scavenging wrecks and ruins since long ago, and has learned a thing or two about the forgotten past.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
        <skillGains>
      <li>
        <defName>Crafting</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Social</defName>
        <amount>2</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground5</defName>
    <title>Mercenary</title>
    <titleShort>Mercenary</titleShort>
    <baseDescription>This skeleton trained in combat, and was recruited to serve in a larger faction.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
        <skillGains>
      <li>
        <defName>Social</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>4</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground6</defName>
    <title>Jury-Rigger</title>
    <titleShort>Jury_Rigger</titleShort>
    <baseDescription>This skeleton used its mechanical skills to repair old machines and its fellow skeletons.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
        <skillGains>
      <li>
        <defName>Crafting</defName>
        <amount>4</amount>
      </li>
      <li>
        <defName>Construction</defName>
        <amount>3</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground7</defName>
    <title>Organic Researcher</title>
    <titleShort>Researcher</titleShort>
    <baseDescription>Inspired by the variety of organic life, this skeleton set out to catalogue all that it sees.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
    <skillGains>
      <li>
        <defName>Animals</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Plants</defName>
        <amount>3</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground8</defName>
    <title>Maddened</title>
    <titleShort>Maddened</titleShort>
    <baseDescription>Its CPU aging, this skeleton was driven mad. Are its inane ravings random, or could they be pieces of a secret history?</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
    <skillGains>
      <li>
        <defName>Social</defName>
        <amount>-3</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground9</defName>
    <title>Hoarder</title>
    <titleShort>Hoarder</titleShort>
    <baseDescription>Finding traces of old memories, this nostalgic skeleton hoards ancient artifacts. It refuses to reveal the purpose behind this collection, and perhaps even it doesn't remember.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
    <skillGains>
      <li>
        <defName>Crafting</defName>
        <amount>2</amount>
      </li>
      <li>
        <defName>Artistic</defName>
        <amount>4</amount>
      </li>
    </skillGains>
</AlienRace.BackstoryDef>

<AlienRace.BackstoryDef>
    <defName>KenshiSkeletonAdultBackground10</defName>
    <title>Defender</title>
    <titleShort>Defender</titleShort>
    <baseDescription>Recognizing the hatred and fear many humans hold toward skeletons, this skeleton joined a skeleton settlement in hopes of defending its race.</baseDescription>
    <slot>Adulthood</slot>
        <spawnCategories>
      <li>SkeletonBackstoryAncient</li>
    </spawnCategories>
    <bodyTypeGlobal>Hulk</bodyTypeGlobal>
