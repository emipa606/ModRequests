<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ====================================== Judges OnSkin ======================================= -->
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>JuDr_JudgeGarb</defName>
		<label>Judge Garb of Justice</label>
		<description>A unifrom worn by Judges. Made with Ballstic Fiber.</description>		
		<graphicData>
			<texPath>Things/Apparel/Display/JuDr_JudgeGarb</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<costList>
			<JuDr_BallisticFiber>100</JuDr_BallisticFiber>
		</costList>
		<recipeMaker>
			<useIngredientsForColor>false</useIngredientsForColor>
			<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<generateCommonality>.00001</generateCommonality>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>8000</WorkToMake>
			<Mass>0.75</Mass>
			<StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		
		<equippedStatOffsets>
			<PainShockThreshold>+0.20</PainShockThreshold>
			<MentalBreakThreshold>-0.20</MentalBreakThreshold>
			<WorkSpeedGlobal>0.10</WorkSpeedGlobal>
		</equippedStatOffsets>
		
		<thingCategories inherit="false">
			<li>JuDr_Apparels</li>
		</thingCategories>

		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Onskin/JuDr_JudgeGarb</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>JuDr_Onskin</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
	
