<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Helmet -->
	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>JuDr_JudgeHelm</defName>
		<label>Judge Helm</label>
		<description>A helmet made for the Street Judges.</description>
		<graphicData>
			<texPath>Things/Apparel/Display/JuDr_JudgeHelm</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<recipeMaker>
			<useIngredientsForColor>false</useIngredientsForColor>
			<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<JuDr_BallisticFiber>75</JuDr_BallisticFiber>
		</costList>
		<techLevel>Spacer</techLevel>
		<generateCommonality>.00001</generateCommonality>
		<tradeability>Sellable</tradeability>
		<statBases>
			<WorkToMake>4000</WorkToMake>
			<MaxHitPoints>75</MaxHitPoints>
			<Mass>1.15</Mass>
			<ArmorRating_Sharp>.3</ArmorRating_Sharp>
			<ArmorRating_Blunt>.1</ArmorRating_Blunt>
			<ArmorRating_Heat>.2</ArmorRating_Heat>
			<StuffEffectMultiplierArmor>0.035</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.45</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.2</EquipDelay>
		</statBases>

		<equippedStatOffsets>
			<ShootingAccuracyPawn>+0.10</ShootingAccuracyPawn>
			<SocialImpact>-0.10</SocialImpact>
		</equippedStatOffsets>
		<thingCategories inherit="false">
			<li>JuDr_Apparels</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Headgear/JuDr_JudgeHelm</wornGraphicPath>
			<!--<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>-->
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
			<tags>
				<!--<li>IndustrialAdvanced</li>-->
				<li>JuDr_Apparel</li>
			</tags>
		</apparel>
	</ThingDef>
	
