<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>JuDr_SpitCarbine</defName>
		<label>Spit Carbine</label>
		<description>A Spit Carbine is a carbine or rifle that fires pistol or rifle ammunition. They are equivalent to Automatic Carbines, Battle Rifles, or Assault Rifles.</description>
		<techLevel>Spacer</techLevel>
		<graphicData>
			<texPath>Things/Item/Weapons/Ranged/SpitCarbine</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<soundInteract>Interact_ChargeRifle</soundInteract>
		<statBases>
			<Mass>8</Mass>
			<AccuracyTouch>0.40</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.75</AccuracyMedium>
			<AccuracyLong>0.85</AccuracyLong>
			<RangedWeapon_Cooldown>0.00</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<ComponentSpacer>2</ComponentSpacer>
			<ComponentIndustrial>4</ComponentIndustrial>
			<Uranium>20</Uranium>
			<Plasteel>250</Plasteel>
		</costList>
		<recipeMaker>
			<workAmount>250000</workAmount>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
			<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
		</recipeMaker>
		<weaponTags>
			<li>SpacerGun</li>
			<li>JuDr_Ranged</li>
		</weaponTags>
		<tickerType>Normal</tickerType>
		<verbs>
			<li>
				<label>General Purpose</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_SpitC_GP</defaultProjectile>
				<warmupTime>0.7</warmupTime>
				<range>35</range>
				<ticksBetweenBurstShots>0.25</ticksBetweenBurstShots>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>3</muzzleFlashScale>				
			</li>
			<li>
				<label>Armor Piercing</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_SpitC_AP</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>27</range>
				<ticksBetweenBurstShots>0.50</ticksBetweenBurstShots>
				<burstShotCount>1</burstShotCount>
				<soundCast>Shot_HeavySMG</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>4</muzzleFlashScale>
			</li>
			<li>
				<label>Three Burst</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_SpitC_GP</defaultProjectile>
				<warmupTime>2</warmupTime>
				<range>30</range>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<burstShotCount>3</burstShotCount>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>3</muzzleFlashScale>
			</li>
			<li>
				<label>Full Auto Supression</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_SpitC_SP</defaultProjectile>
				<warmupTime>5</warmupTime>
				<range>30</range>
				<ticksBetweenBurstShots>5.1</ticksBetweenBurstShots>
				<burstShotCount>100</burstShotCount>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>3</muzzleFlashScale>
			</li>
			<li>
				<label>Charged Shot</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<range>25</range>
				<forcedMissRadius>.9</forcedMissRadius>
				<warmupTime>4.0</warmupTime>
				<burstShotCount>1</burstShotCount>
				<noiseRadius>4</noiseRadius>
				<soundCast>Shot_ChargeBlaster</soundCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>ChargedShot</defaultProjectile>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
		</verbs>
		<tools>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>6</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_BladelinkWeapon"/>
			<li Class="CompToggleFireMode.CompProperties_ToggleFireMode"/>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponGun</nameMaker>
				<descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

</Defs>