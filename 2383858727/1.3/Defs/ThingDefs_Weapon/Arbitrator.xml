<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>JuDr_Arbitrator</defName>
		<label>Arbitrator</label>
		<description>The Arbitrator pump-action shotgun is a terrifyingly effective close range weapon, capable of annihilating even well-armoured enemies.</description>
		<techLevel>Spacer</techLevel>
		<graphicData>
			<texPath>Things/Item/Weapons/Ranged/Arbitrator</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.2</drawSize>
		</graphicData>
		<soundInteract>Interact_ChargeRifle</soundInteract>
		<statBases>
			<Mass>5</Mass>
			<AccuracyTouch>0.80</AccuracyTouch>
			<AccuracyShort>0.85</AccuracyShort>
			<AccuracyMedium>0.65</AccuracyMedium>
			<AccuracyLong>0.60</AccuracyLong>
			<RangedWeapon_Cooldown>0.50</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<ComponentIndustrial>3</ComponentIndustrial>
			<Uranium>20</Uranium>
			<Plasteel>150</Plasteel>
		</costList>
		<recipeMaker>
			<workAmount>200000</workAmount>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
			<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
		</recipeMaker>
		<weaponTags>
			<li>SpacerGun</li>
			<li>JuDr_Ranged</li>
		</weaponTags>
		<tickerType>Normal</tickerType>
		<verbs>
			<li>
				<label>Buck Shot</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Arb_Buck</defaultProjectile>
				<warmupTime>0.7</warmupTime>
				<range>15</range>
				<soundCast>Shot_Shotgun</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>5</muzzleFlashScale>
			</li>
			<li>
				<label>Armor Piercing</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Arb_AP</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>15</range>
				<soundCast>Shot_Shotgun</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>6</muzzleFlashScale>
			</li>
			<li>
				<label>Slug Shot</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Arb_Slug</defaultProjectile>
				<warmupTime>2.0</warmupTime>
				<range>17</range>
				<soundCast>Shot_Shotgun</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>5</muzzleFlashScale>
			</li>
			<li>
				<label>EMP Shot</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Arb_EMP</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>15</range>
				<ticksBetweenBurstShots>0.75</ticksBetweenBurstShots>
				<burstShotCount>1</burstShotCount>
				<soundCast>Shot_ChargeRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>12</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1</cooldownTime>
			</li>
		</tools>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_BladelinkWeapon"/>
			<li Class="OgsCompOversizedWeapon.CompProperties_OversizedWeapon" />
			<li Class="CompToggleFireMode.CompProperties_ToggleFireMode"/>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponGun</nameMaker>
				<descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
	</ThingDef>

</Defs>