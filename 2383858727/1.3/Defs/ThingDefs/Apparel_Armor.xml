<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- ====================================== Judge Armor =========================================== -->
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>JuDr_JudgeArmor</defName>
		<label>Judge Bodyarmor</label>
		<description>A armor that covers most fo the vital parts of the body.</description>
		<graphicData>
			<texPath>Things/Apparel/Display/JuDr_JudgeArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<costList>
			<JuDr_BallisticFiber>200</JuDr_BallisticFiber>
		</costList>
		<techLevel>Spacer</techLevel>
		<recipeMaker>
			<useIngredientsForColor>false</useIngredientsForColor>
			<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<generateCommonality>.00001</generateCommonality>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>280</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>8.0</Mass>	 
			<ArmorRating_Sharp>1.05</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
			<ArmorRating_Heat>0.45</ArmorRating_Heat>
			<StuffEffectMultiplierArmor>0.025</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.20</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>1.20</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>

		<equippedStatOffsets>
			<MoveSpeed>0.30</MoveSpeed>
			<PainShockThreshold>0.15</PainShockThreshold>
			<SocialImpact>-0.10</SocialImpact>
		</equippedStatOffsets>
		<thingCategories inherit="false">
			<li>JuDr_Apparels</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Armor/JuDr_JudgeArmor</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<!--<li>IndustrialAdvanced</li>-->
				<li>JuDr_Apparel</li>
				<!--<li>IndustrialBasic</li>-->
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>	

	</ThingDef>
	
