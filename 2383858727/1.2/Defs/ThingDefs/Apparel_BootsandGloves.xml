<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <!-- ========================== Boots ============================ -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>JuDr_Boots</defName>
		<label>Judge Boots</label>
		<description>Judge Boots equiped with gambler's knife.</description>
		<graphicData>
			<texPath>Things/Apparel/Accessories/GamblersKnife</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.0001</generateCommonality>
		<recipeMaker>
			<useIngredientsForColor>false</useIngredientsForColor>
			<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<JuDr_BallisticFiber>100</JuDr_BallisticFiber>
		</costList>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>2000</WorkToMake>
			<Mass>0.25</Mass>
			<ArmorRating_Sharp>0.10</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>2.0</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.2</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories inherit="false">
			<li>JuDr_Apparels</li>
		</thingCategories>
		<apparel>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
            </defaultOutfitTags>
			<bodyPartGroups>
				<li>Feet</li>
			</bodyPartGroups>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>JuDr_Apparel</li>
			</tags>
		</apparel>
		<comps>
			<li>
				<compClass>CompApparelVerbGiver.CompApparelVerbGiver</compClass>
			</li>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompQuality</compClass>
			</li>			
		</comps>
		<tools>
			<li>
				<label>kick</label>
				<capacities>
				  <li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.0</cooldownTime>
			</li>
			<li>
				<label>gambler's knife edge</label>
				<capacities>
				  <li>Cut</li>
				</capacities>
				<power>10</power>
				<cooldownTime>0.8</cooldownTime>
			</li>
		</tools>
    </ThingDef>
	
