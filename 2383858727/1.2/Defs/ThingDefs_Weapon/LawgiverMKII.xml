<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>JuDr_LawgiverMKII</defName>
		<label>Lawgiver MKII</label>
		<description>Manufactured by General Arms, the Lawgiver MKII is a voice-activated machine pistol that serves as the standard sidearm issued to Judges.</description>
		<techLevel>Spacer</techLevel>
		<graphicData>
			<texPath>Things/Item/Weapons/Ranged/LawbringerMKII</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.55</drawSize>
		</graphicData>
		<soundInteract>Interact_ChargeRifle</soundInteract>
		<statBases>
			<Mass>3</Mass>
			<AccuracyTouch>0.65</AccuracyTouch>
			<AccuracyShort>0.80</AccuracyShort>
			<AccuracyMedium>0.75</AccuracyMedium>
			<AccuracyLong>0.65</AccuracyLong>
			<RangedWeapon_Cooldown>0.00</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<ComponentIndustrial>3</ComponentIndustrial>
			<Uranium>20</Uranium>
			<Plasteel>150</Plasteel>
		</costList>
		<recipeMaker>
			<workAmount>200000</workAmount>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
			<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
		</recipeMaker>
		<weaponTags>
			<li>SpacerGun</li>
			<li>JuDr_Ranged</li>
		</weaponTags>
		<tickerType>Normal</tickerType>
		<verbs>
			<li>
				<label>General Purpose</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_LawgiverMKII_GP</defaultProjectile>
				<warmupTime>0.7</warmupTime>
				<range>20</range>
				<ticksBetweenBurstShots>0.25</ticksBetweenBurstShots>
				<soundCast>Shot_Autopistol</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>5</muzzleFlashScale>
			</li>
			<li>
				<label>Armor Piercing</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_LawgiverMKII_AP</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>15</range>
				<ticksBetweenBurstShots>0.50</ticksBetweenBurstShots>
				<burstShotCount>1</burstShotCount>
				<soundCast>Shot_Revolver</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>6</muzzleFlashScale>
			</li>
			<li>
				<label>Full Auto</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_LawgiverMKII_GP</defaultProjectile>
				<warmupTime>2.0</warmupTime>
				<range>17</range>
				<ticksBetweenBurstShots>0.80</ticksBetweenBurstShots>
				<burstShotCount>10</burstShotCount>
				<soundCast>Shot_Autopistol</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>5</muzzleFlashScale>
			</li>
			<li>
				<label>Incendiary Shot</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_LawgiverMKII_I</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>15</range>
				<forcedMissRadius>0.9</forcedMissRadius>
				<ticksBetweenBurstShots>0.75</ticksBetweenBurstShots>
				<burstShotCount>1</burstShotCount>
				<soundCast>Shot_ChargeRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>12</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
			<li>
				<label>Grenade Shot</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<range>20</range>
				<forcedMissRadius>1.9</forcedMissRadius>
				<warmupTime>5.0</warmupTime>
				<burstShotCount>1</burstShotCount>
				<noiseRadius>4</noiseRadius>
				<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>Shot_IncendiaryLauncher</soundCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>Bullet_LawgiverMKII_G</defaultProjectile>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
		</verbs>
		<tools>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>6</power>
				<cooldownTime>1</cooldownTime>
			</li>
		</tools>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_BladelinkWeapon"/>
			<li Class="OgsCompOversizedWeapon.CompProperties_OversizedWeapon" />
			<li Class="CompToggleFireMode.CompProperties_ToggleFireMode"/>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponGun</nameMaker>
				<descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
	</ThingDef>

</Defs>