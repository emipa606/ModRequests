<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>AM_MechanoidCommandBuffPikeman</defName>
        <label>mechanoid command buff</label>
        <description>pikeman commander supports their nearby allies by raising shooting accuracy and lowering aiming time.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <comps>
          <li Class="HediffCompProperties_Disappears">
            <showRemainingTime>false</showRemainingTime>
          </li>
          <li Class="HediffCompProperties_DisappearsOnDeath"/>
          <li Class="HediffCompProperties_Link">
            <requireLinkOnOtherPawn>false</requireLinkOnOtherPawn>
            <maxDistance>5</maxDistance>
		  </li>
        </comps>
        <isBad>false</isBad>
        <stages>
          <li>
            <statOffsets>
				<AimingDelayFactor>-0.15</AimingDelayFactor>
				<ShootingAccuracyPawn>1.4</ShootingAccuracyPawn>
            </statOffsets>
          </li>
        </stages>
    </HediffDef>
	<HediffDef>
        <defName>AM_MechanoidCommandBuffPraetorian</defName>
        <label>mechanoid command buff</label>
        <description>Praetorian supports their nearby allies by raising armor and lowering incoming damage.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <comps>
          <li Class="HediffCompProperties_Disappears">
            <showRemainingTime>false</showRemainingTime>
          </li>
          <li Class="HediffCompProperties_DisappearsOnDeath"/>
          <li Class="HediffCompProperties_Link">
            <requireLinkOnOtherPawn>false</requireLinkOnOtherPawn>
            <maxDistance>5</maxDistance>
		  </li>
        </comps>
        <isBad>false</isBad>
        <stages>
          <li>
            <statOffsets>
				<IncomingDamageFactor>-0.10</IncomingDamageFactor>
				<ArmorRating_Sharp>0.25</ArmorRating_Sharp>
            </statOffsets>
          </li>
        </stages>
    </HediffDef>
</Defs>