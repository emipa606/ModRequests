<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationInsert">
		<xpath>/Defs/PawnKindDef[defName="Mech_Termite_Breach"]/lifeStages/li/bodyGraphicData/graphicClass</xpath>
		<order>Prepend</order>
		<value>
			<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Termite</maskPath>
			<shaderType>CutoutWithOverlay</shaderType>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/PawnKindDef[defName="Mech_Termite_Breach"]/lifeStages</xpath>
		<order>Prepend</order>
		<value>
			<li MayRequire="Ludeon.Rimworld.Biotech">
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/Mech_Termite/Mech_Termite</texPath>
					<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Termite</maskPath>
					<shaderType>CutoutWithOverlay</shaderType>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>3</drawSize>
				</bodyGraphicData>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="Mech_Termite"]/race/lifeStageAges</xpath>
		<value>        
			<li MayRequire="Ludeon.Rimworld.Biotech">
				<def>MechanoidFullyFormed</def>
				<minAge>100</minAge>
				<soundWounded>Pawn_Mech_Termite_Wounded</soundWounded>
				<soundDeath>Pawn_Mech_Termite_Death</soundDeath>
				<soundCall>Pawn_Mech_Termite_Call</soundCall>
			</li>
		</value>
	</Operation>
</Patch>