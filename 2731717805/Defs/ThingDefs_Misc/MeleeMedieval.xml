<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--Starfang Greatsword-->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_StarfangGS</defName>
    <label>StarfangGS</label>
    <description>A short sword of ancient design. Good for stabbing or slashing. It's light and nimble, which sometimes lets it beat bigger, heavier weapons.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/StarfangGS</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>1.15</drawSize>
      <drawOffsetSouth>(0.0, 0.0, .1)</drawOffsetSouth>
      <drawOffsetNorth>(0.0, 0.0, .1)</drawOffsetNorth>
      <drawOffsetEast>(0.0, 0.0, .1)</drawOffsetEast>
      <drawOffsetWest>(0.0, 0.0, .1)</drawOffsetWest>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <techLevel>Medieval</techLevel>
    <generateCommonality>0</generateCommonality>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    <weaponTags Inherit="False" />
    <tradeability>None</tradeability>
    <statBases>
      <WorkToMake>35000</WorkToMake>
      <Mass>4</Mass>
    </statBases>
    <costList>
      <MeteoriteOre>275</MeteoriteOre>
      <Lyrium>25</Lyrium>
    </costList>
    <relicChance>2</relicChance>
    <equippedAngleOffset>-35</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2.4</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>40</power>
        <cooldownTime>3</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>40</power>
        <cooldownTime>3</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>LongBlades</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

