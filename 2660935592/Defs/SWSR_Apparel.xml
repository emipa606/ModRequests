<?xml version="1.0" encoding="utf-8"?>
<Defs>
<ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_SquarePants</defName>
    <label>square pants, shirt and tie</label>
    <description>A simple set of squarepants with a nice-looking collared square shirt with buttons and a neat tie.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
	<drawSize>(0.85, 0.85)</drawSize>
      <texPath>Things/Pawn/SpongeBob/Apparel/SquarePants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>85</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>3200</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
	  <wornGraphicPath>Things/Pawn/SpongeBob/Apparel/SquarePants</wornGraphicPath>
	  <wornGraphicData>
        <east>
          <offset>(0.0, 0.0)</offset>
        </east>
        <west>
          <offset>(0.0, 0.0)</offset>
        </west>
		<south>
		  <offset>(0.0, 0.0)</offset>
		</south>
		<north>
		  <offset>(0.0, 0.0)</offset>
		</north>

      </wornGraphicData>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
</Defs>