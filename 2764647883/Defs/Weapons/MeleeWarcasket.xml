<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="VFEP_BaseMeleeWeapon_Warcasket">
    <defName>VFEP_WarcasketMeleeWeapon_GMace</defName>
    <label>warcasket barbatos mace</label>
    <description>Barbatos' mace. It strikes the warcasket with overwhelming force, turning the contents of the enemy warcasket into shakes. Also, the spike rod mounted on its tip can pierce enemy armor and inflict damage.</description>
    <thingClass>VFECore.ThingWithFloorGraphic</thingClass>
	<graphicData>
      <texPath>Things/Item/Weapons/WarcasketGundamMace</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
	  <MarketValue>1460</MarketValue>
      <WorkToMake>35000</WorkToMake>
      <Mass>30</Mass>
    </statBases>
	<equippedAngleOffset>-35</equippedAngleOffset>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>30</power>
        <cooldownTime>2.8</cooldownTime>
		<armorPenetration>0.5</armorPenetration>
      </li>
      <li>
        <label>spikerod</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>36</power>
        <cooldownTime>3.0</cooldownTime>
    <armorPenetration>0.9</armorPenetration>
      </li>
    </tools>
	<modExtensions>
		<li Class="VFECore.FloorGraphicExtension">
			<graphicData>
				<graphicClass>Graphic_Single</graphicClass>
				<texPath>Things/Item/WeaponsBoxed/WarcasketGundamMace_OnFloor</texPath>
				<onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
				<drawSize>1</drawSize>
			</graphicData>
		</li>
	</modExtensions>
  </ThingDef>
  <ThingDef ParentName="VFEP_BaseMeleeWeapon_Warcasket">
    <defName>VFEP_WarcasketMeleeWeapon_GKatana</defName>
    <label>warcasket barbatos katana</label>
    <description>A sword for Barbatos, it requires great skill to cut through the armor of the Warcasket, but the continuous slashes from the light blade boast immeasurable power.</description>
    <thingClass>VFECore.ThingWithFloorGraphic</thingClass>
  <graphicData>
      <texPath>Things/Item/Weapons/WarcasketGundamKatana</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    <drawSize>1.7</drawSize>
    </graphicData>
    <statBases>
    <MarketValue>1460</MarketValue>
      <WorkToMake>35000</WorkToMake>
      <Mass>30</Mass>
    </statBases>
  <equippedAngleOffset>-35</equippedAngleOffset>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>23</power>
        <cooldownTime>1.5</cooldownTime>
    <armorPenetration>0.8</armorPenetration>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>28</power>
        <cooldownTime>1.6</cooldownTime>
    <armorPenetration>0.8</armorPenetration>
      </li>
    </tools>
  <modExtensions>
    <li Class="VFECore.FloorGraphicExtension">
      <graphicData>
        <graphicClass>Graphic_Single</graphicClass>
        <texPath>Things/Item/WeaponsBoxed/WarcasketGundamKatana_OnFloor</texPath>
        <onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
        <drawSize>1</drawSize>
      </graphicData>
    </li>
  </modExtensions>
  </ThingDef>
</Defs>