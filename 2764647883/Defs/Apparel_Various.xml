<Defs>
	<!-- Barbatos -->
	 <VFEPirates.WarcasketDef ParentName="VFEP_WarcasketHelmetBase">
    <defName>VFEP_WarcasketHelmet_Barbatos</defName>
    <label>Barbatos warcasket helmet</label>
    <shortDescription>The Gundam Barbatos is one of 72 "Gundam" frames that was produced and used in the Calamity War, roughly 300 years ago.</shortDescription>
    <description>The Gundam Barbatos is one of 72 "Gundam" frames that was produced and used in the Calamity War, roughly 300 years ago.</description>
    <graphicData>
      <texPath>Things/Pawn/Warcasketlike/Barbatos/WarcasketHelmet</texPath>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <statBases>
      <Mass>5</Mass>
			<ArmorRating_Sharp>1.30</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.00</ArmorRating_Blunt>
			<ArmorRating_Heat>1.00</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	  <MoveSpeed>-0.1</MoveSpeed>
	  <VFEP_PowerJumpRange>10</VFEP_PowerJumpRange>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <costList>
      <ComponentIndustrial>3</ComponentIndustrial>
      <Steel>45</Steel>
	  <Plasteel>10</Plasteel>
    </costList>
    <researchPrerequisites>
      <li>VFEP_SpecialisedWarcaskets</li>
    </researchPrerequisites>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Warcasketlike/Barbatos/WarcasketHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
		<li>WarcasketHussar</li>
		<li>WarcasketAll</li>
      </tags>
    </apparel>
  </VFEPirates.WarcasketDef>
	<VFEPirates.WarcasketDef ParentName="VFEP_WarcasketArmorBase">
