<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Food crops ==============================-->

  <ThingDef ParentName="PlantBase">
    <defName>Plant_HybridRice</defName>
    <label>hybrid rice plant</label>
    <description>This improved rice plant can grow in barren land, taste not good, but yield higher.</description>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/HybridRicePlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(1.1,1.3)</drawSize>
    </graphicData>
    <uiIconPath>Things/Icon/HybridRicePlant_MenuIcon</uiIconPath>
    <uiIconScale>1.00</uiIconScale>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.4</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <maxMeshCount>4</maxMeshCount>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawRice</harvestedThingDef>
      <harvestYield>18</harvestYield>
      <sowMinSkill>6</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>5</growDays>
	  <immatureGraphicPath>Things/Plant/HybridRicePlantImmature</immatureGraphicPath>
      <visualSizeRange>0.3~0.8</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>

</Defs>