<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Name="SlugPawn" Abstract="True">
    <thingClass>Pawn</thingClass>
    <category>Pawn</category>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Pawn</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <hasTooltip>true</hasTooltip>
    <soundImpactDefault>BulletImpact_Flesh</soundImpactDefault>
    <statBases>
      <Mass>80</Mass>
    </statBases>
    <inspectorTabs>
      <li>ITab_Pawn_Health</li>
      <li>ITab_Pawn_Needs</li>
      <li>ITab_Pawn_Character</li>
      <li>ITab_Pawn_Training</li>
      <li>ITab_Pawn_Social</li>
      <li>ITab_Pawn_Guest</li>
      <li>ITab_Pawn_Prisoner</li>
      <li>ITab_Pawn_FormingCaravan</li>
      <li>ITab_Pawn_Gear</li>
      <li>ITab_Pawn_Log</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompAttachBase</compClass>
      </li>
    </comps>
    <drawGUIOverlay>true</drawGUIOverlay>
  </ThingDef>




  <PawnKindDef>
    <defName>LordSlug</defName>
    <race>N_Slug</race>
    <label>super namekian</label>
    <combatPower>100</combatPower>
    <isFighter>true</isFighter>
    <factionLeader>true</factionLeader>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <!--<forceNormalGearQuality>true</forceNormalGearQuality>-->
    <defaultFactionType>SlugArmy</defaultFactionType>

    <backstoryFilters>
      <li>
        <categories>
         <li>SlugBG</li>
       </categories>
     </li>
   </backstoryFilters>


   <gearHealthRange>
    <min>1</min>
    <max>1</max>
  </gearHealthRange>
  <apparelTags>
    <li>N_Slug</li>
  </apparelTags>
  <apparelMoney>
    <min>500</min>
    <max>5000</max>
  </apparelMoney>
  <itemQuality>Good</itemQuality>
  <apparelRequired>
    <li>N_SlugOutfit</li>
    <li>N_SlugHelmet</li>
  </apparelRequired>
  <backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
  <inventoryOptions>
    <subOptionsChooseOne>
      <li>
        <choiceChance>3</choiceChance>
        <thingDef>N_Water</thingDef>
        <countRange>5</countRange>
      </li>
      <li>
        <choiceChance>6</choiceChance>
        <thingDef>Luciferium</thingDef>
        <countRange>5</countRange>
      </li>
    </subOptionsChooseOne>
  </inventoryOptions>
</PawnKindDef>

<PawnKindDef Name="SlugMookBase" Abstract="false">
  <defName>SlugSoldier</defName>
  <race>Human</race>
  <label>Slug soldier</label>
  <combatPower>50</combatPower>
  <isFighter>true</isFighter>
  <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
  <!--<forceNormalGearQuality>true</forceNormalGearQuality>-->
  <defaultFactionType>SlugArmy</defaultFactionType>

  <backstoryFilters>
    <li>
      <categories>
       <li>Offworld</li>
     </categories>
   </li>
   <li>
    <categories>
      <li>Pirate</li>
    </categories>
  </li>
     <li>
    <categories>
      <li>Outlander</li>
    </categories>
  </li>
</backstoryFilters>



<gearHealthRange>
  <min>1</min>
  <max>1</max>
</gearHealthRange>
<apparelTags>
  <li>N_Slug</li>
</apparelTags>
<apparelMoney>
  <min>500</min>
  <max>5000</max>
</apparelMoney>
<itemQuality>Good</itemQuality>
<weaponMoney>
  <min>1100</min>
  <max>3000</max>
</weaponMoney>
<weaponTags>
  <li>SpacerGun</li>
</weaponTags>
<apparelRequired>
  <li>N_SlugArmour</li>
  <li>N_SlugHelmetMook</li>
</apparelRequired>
<backstoryCryptosleepCommonality>0.2</backstoryCryptosleepCommonality>
</PawnKindDef>





</Defs>