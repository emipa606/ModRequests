<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Name="NamekPawn" Abstract="True">
    <thingClass>Pawn</thingClass>
    <category>Pawn</category>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Pawn</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <hasTooltip>true</hasTooltip>
    <soundImpactDefault>BulletImpact_Flesh</soundImpactDefault>
    <statBases>
      <Mass>80</Mass>
    </statBases>
    <inspectorTabs>
      <li>ITab_Pawn_Health</li>
      <li>ITab_Pawn_Needs</li>
      <li>ITab_Pawn_Character</li>
      <li>ITab_Pawn_Training</li>
      <li>ITab_Pawn_Social</li>
      <li>ITab_Pawn_Guest</li>
      <li>ITab_Pawn_Prisoner</li>
      <li>ITab_Pawn_FormingCaravan</li>
      <li>ITab_Pawn_Gear</li>
      <li>ITab_Pawn_Log</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompAttachBase</compClass>
      </li>
    </comps>
    <drawGUIOverlay>true</drawGUIOverlay>
  </ThingDef>




  <PawnKindDef Name="NamekBasePawnKind" Abstract="false">
    <defName>NamekPlayer</defName>
    <race>Namek</race>
    <label>namekian</label>
    <combatPower>30</combatPower>
    <isFighter>false</isFighter>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <forceNormalGearQuality>true</forceNormalGearQuality>
    <defaultFactionType>PlayerColony</defaultFactionType>
    <backstoryCategories>
      <li>NamekBG</li>
      <li>Tribal</li>
    </backstoryCategories>
    <apparelTags>
      <li>N_Apparel</li>
      <li>Outlander</li>
    </apparelTags>
    <apparelMoney>
      <min>350</min>
      <max>600</max>
    </apparelMoney>
    <backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
  </PawnKindDef>



  <PawnKindDef ParentName="NamekBasePawnKind" Name="NamekVillager" Abstract="false">
    <defName>N_Fighter</defName>
    <label>namekian fighter</label>
    <defaultFactionType>NamekVillage</defaultFactionType>
    <isFighter>true</isFighter>
    <backstoryCategories>
      <li>N_Fighter</li>
    </backstoryCategories>
    <apparelTags>
      <li>N_Apparel</li>
    </apparelTags>
    <inventoryOptions>
      <subOptionsChooseOne>
        <li>
          <choiceChance>6</choiceChance>
          <thingDef>N_Water</thingDef>
          <countRange>5</countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>

  <PawnKindDef ParentName="NamekVillager">
    <defName>N_Peaceful</defName>
    <label>namekian villager</label>
    <factionLeader>true</factionLeader>
    <backstoryCategories>
      <li>N_Peaceful</li>
    </backstoryCategories>
  </PawnKindDef>

  <PawnKindDef ParentName="NamekVillager">
    <defName>N_Trader</defName>
    <label>namekian trader</label>
    <backstoryCategories>
      <li>N_Peaceful</li>
    </backstoryCategories>
    <trader>true</trader>
  </PawnKindDef>


</Defs>