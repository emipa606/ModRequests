<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <ThingDef ParentName="MealBase">
    <defName>N_Water</defName>
    <label>water</label>
    <description>Fresh water from the well.</description>
    <graphicData>
      <texPath>Items/Water</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
          </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>20</stackLimit>
    <tickerType>Rare</tickerType>
    <socialPropernessMatters>true</socialPropernessMatters>
    <rotatable>false</rotatable>
    <alwaysHaulable>true</alwaysHaulable>
    <statBases>
      <MarketValue>0.1</MarketValue>
      <Mass>0.5</Mass>
      <MaxHitPoints>5</MaxHitPoints>
      <Flammability>0</Flammability>
      <Nutrition>0.5</Nutrition>
      <FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
      <DeteriorationRate>0.25</DeteriorationRate>
    </statBases>
    <pathCost>15</pathCost>
    <ingestible>
      <preferability>MealSimple</preferability>
      <foodType>Fluid</foodType>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <ingestSound>Ingest_Beer</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(-0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
       <chairSearchRadius>25</chairSearchRadius>
    </ingestible>
    <drawGUIOverlay>true</drawGUIOverlay>
    <uiIconForStackCount>1</uiIconForStackCount>
  </ThingDef>




  <!--Well-->

  <RecipeDef>
    <defName>GetWater</defName>
    <label>Draw water</label>
    <description>Draw water</description>
    <jobString>Drawing water.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <workAmount>200</workAmount>
    <products>
      <N_Water>5</N_Water>
    </products>
    <skillRequirements>
      <Cooking>0</Cooking>
    </skillRequirements>
    <workSkill>Cooking</workSkill>
  </RecipeDef>



<WorkGiverDef>
    <defName>GetWater</defName>
    <label>Draw water</label>
    <giverClass>WorkGiver_DoBill</giverClass>
    <workType>Cooking</workType>
    <priorityInType>100</priorityInType>
    <fixedBillGiverDefs>
      <li>NamekWell</li>
    </fixedBillGiverDefs>
    <verb>draw water</verb>
    <gerund>drawing water at</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
</WorkGiverDef>



  <ThingDef ParentName="BuildingBase">
  <defName>NamekWell</defName>
    <label>Groundwater well</label>
    <description>A place to get drinkable fresh water.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Building/WaterWell</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(255, 255, 255)</color>
      <drawSize>(2,2)</drawSize>
       <drawRotated>false</drawRotated>
            <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
   <!--     <drawerType>RealtimeOnly</drawerType>-->
    <castEdgeShadows>false</castEdgeShadows>
      <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
     <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <costList>
      <WoodLog>10</WoodLog>
    </costList>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
    <statBases>
      <WorkToBuild>50</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.1</Flammability>
       <Cleanliness>5</Cleanliness>
    </statBases>
    <recipes>
     <li>GetWater</li> 
   </recipes>
   <pathCost>70</pathCost>
   <scatterableOnMapGen>false</scatterableOnMapGen>
   <size>(1,1)</size>
   <designationCategory>Production</designationCategory>
   <passability>PassThroughOnly</passability>
   <hasInteractionCell>True</hasInteractionCell>
   <interactionCellOffset>(0,0,-1)</interactionCellOffset>
   <surfaceType>Item</surfaceType>
   <inspectorTabs>
    <li>ITab_Bills</li>
  </inspectorTabs>
  <building>
    <isMealSource>true</isMealSource>
    <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    <sowTag>SupportPlantsOnly</sowTag>
    <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
    <ai_chillDestination>false</ai_chillDestination>
  <!--  <workSpeedPenaltyOutdoors>false</workSpeedPenaltyOutdoors>
      <workSpeedPenaltyTemperature>false</workSpeedPenaltyTemperature>-->
  </building>
  <uiIconScale>0.5</uiIconScale>
</ThingDef>



</Defs>
