<?xml version="1.0" encoding="utf-8" ?>
<Defs>



  <FactionDef ParentName="PirateBandBase">
    <defName>SlugArmy</defName>
     <fixedName>Slug's Army</fixedName>
    <label>Demonic settlement</label>
    <description>A settlement belonging to Slug's forces, from which they manage their operations on this planet.</description>
    <pawnSingular>demon clansman</pawnSingular>
    <pawnsPlural>demon clansmen</pawnsPlural>
       <listOrderPriority>50</listOrderPriority>
    <settlementGenerationWeight>0.1</settlementGenerationWeight>
    <requiredCountAtGameStart>3</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
          <canMakeRandomly>true</canMakeRandomly> 
      <canStageAttacks>true</canStageAttacks>
      <canSiege>true</canSiege>
<leaderTitle>Master</leaderTitle>
<factionIconPath>Slug/FactionSlug</factionIconPath>
<settlementTexturePath>Slug/FactionSlug</settlementTexturePath>

    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>



    <techLevel>Spacer</techLevel>

        <backstoryFilters>
      <li>
        <categories>
           <li>Pirate</li>
        </categories>
      </li>
    </backstoryFilters>
   <geneticVariance>1</geneticVariance>


    <autoFlee>false</autoFlee>
 



    <allowedArrivalTemperatureRange>-100~50</allowedArrivalTemperatureRange>
    

    

    <colorSpectrum Inherit="false">    <!-- icon coloration RGB -->
      <li>(202,168,33)</li>
    </colorSpectrum>

  <raidCommonalityFromPointsCurve>   <!-- left how big a raid is , right how often -->
    <points>
      <li>(40, 3)</li>
      <li>(500, 2)</li>
      <li>(1500, 1)</li>
      <li>(3500, 0.25)</li>
    </points>
    </raidCommonalityFromPointsCurve>

      
    <humanlikeFaction>true</humanlikeFaction>
    <canUseAvoidGrid>false</canUseAvoidGrid>
    <earliestRaidDays>100</earliestRaidDays>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
              </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers Inherit="false">
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <LordSlug>1</LordSlug>
          <SlugSoldier>20</SlugSoldier>
        </options>
      </li>
          <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <LordSlug>1</LordSlug>
          <SlugSoldier>20</SlugSoldier>
        </options>
      </li>
          <li>
        <kindDef>Trader</kindDef>
        <options>
          <Town_Trader>1</Town_Trader>
          <SlugSoldier>20</SlugSoldier>
        </options>
      </li>
          <li>
        <kindDef>Settlement</kindDef>
        <options>
          <LordSlug>1</LordSlug>
          <SlugSoldier>20</SlugSoldier>
        </options>
      </li>
    </pawnGroupMakers>

  </FactionDef>

  
</Defs>