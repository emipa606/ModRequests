    </comps>
  </ThingDef>

  <ThingDef ParentName="SlugBase">
    <defName>N_SlugOutfit</defName>
    <description>Lord Slug's iconic garments.</description>
    <label>Slug's Outfit</label>
    <graphicData>
      <texPath>Slug/Apparel/Master/SlugOutfit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
     <WorkToMake>2700</WorkToMake>
      <MaxHitPoints>350</MaxHitPoints>
      <Mass>20</Mass>
      <Flammability>0.5</Flammability>
      <ArmorRating_Sharp>1.10</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
      <ArmorRating_Heat>0.60</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
     <EquipDelay>1.5</EquipDelay>
     <MarketValue>3000</MarketValue>
   </statBases>
   <apparel>
    <bodyPartGroups>
      <li>Torso</li>
      <li>Neck</li>
      <li>Shoulders</li>
      <li>Arms</li>
      <li>Legs</li>
    </bodyPartGroups>
    <wornGraphicPath>Slug/Apparel/Master/Slug</wornGraphicPath>
    <layers>
      <li>Middle</li>
    </layers>
    <tags>
      <li>N_Slug</li>
    </tags>
    <defaultOutfitTags>
      <li>N_Slug</li>
    </defaultOutfitTags>
  </apparel>
</ThingDef>


