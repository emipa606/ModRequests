<Defs>

  <ThingDef Name="SlugBase" ParentName="ApparelBase" Abstract="True">
    <techLevel>Spacer</techLevel>
   <!--<costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>-->
    <thingCategories>
      <li>Apparel</li>
