<?xml version="1.0" encoding="utf-8" ?>
<Defs>



  <FactionDef ParentName="TribeBase" Name="NamekFactionBase">
    <defName>NamekVillage</defName>
    <label>namekian settlement</label>
    <description>A group of Namekians who ended up in this planet after they had to flee New Namek for their own safety. A deadly virus spread across the tribe and they took space to save the last few healthy members. \n\nNamekians are a well-natured people who only wish to live peacefully and take care of the local fauna and flora.</description>
    <pawnSingular>Namekian</pawnSingular>
    <pawnsPlural>Namekians</pawnsPlural>
    <categoryTag>Tribal</categoryTag>
    <listOrderPriority>50</listOrderPriority>
    <settlementGenerationWeight>0.1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>false</canStageAttacks>
    <leaderTitle>Grand Elder</leaderTitle>

    <techLevel>Neolithic</techLevel>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
   
   <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
   <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>

    <colorSpectrum Inherit="false">
      <li>(0.490, 0.882, 0.439)</li>
      <li>(0.243, 0.509, 0.207)</li>
    </colorSpectrum>



    <allowedCultures Inherit="false"><li>Namekian</li></allowedCultures>


        <backstoryFilters>
      <li>
        <categories>
           <li>NamekBG</li>
        </categories>
      </li>
            <li>
        <categories>
          <li>Tribal</li>
        </categories>
      </li>
    </backstoryFilters>




		<geneticVariance>1</geneticVariance>
<caravanTraderKinds Inherit="false">
      <li>Caravan_Namek_Basic</li>
    </caravanTraderKinds>
    <visitorTraderKinds Inherit="false">
      <li>Caravan_Namek_Basic</li>
    </visitorTraderKinds>
    <baseTraderKinds Inherit="false">
      <li>Caravan_Namek_Basic</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-10~200</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers Inherit="false">
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <N_Peaceful>5</N_Peaceful>
          <N_Fighter>10</N_Fighter>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <N_Peaceful>10</N_Peaceful>
          <N_Fighter>5</N_Fighter>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <N_Trader>1</N_Trader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Alpaca>4</Alpaca>
        </carriers>
        <guards>
          <N_Peaceful>2</N_Peaceful>
          <N_Fighter>5</N_Fighter>
				</guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <N_Peaceful>20</N_Peaceful>
          <N_Fighter>10</N_Fighter>
        </options>
      </li>
    </pawnGroupMakers>





      <apparelStuffFilter>
<thingDefs>
<li>Cloth</li>
</thingDefs>
</apparelStuffFilter>


  </FactionDef>

  
</Defs>