<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragon Ball Z: Rimworld Adventures - Revived!</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/PawnKindDef[defName = "LordSlug"]</xpath>
					<value>
						<weaponMoney>
							<min>1100</min>
							<max>3000</max>
						</weaponMoney>
						<weaponTags>
							<li>LightDestructiveKi</li>
							<li>KiMeleeLight</li>
							<li>ExplosiveKi</li>
						</weaponTags>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/PawnKindDef[defName = "SlugSoldier"]/weaponTags</xpath>
					<value>
						<li>LightDestructiveKi</li>
						<li>KiMeleeLight</li>
						<li>ExplosiveKi</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>


