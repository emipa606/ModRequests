    <DamageDef Name="NovaBomb">
    <defName>NovaBomb</defName>
    <label>novabomb</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has died in an explosion.</deathMessage>
    <hediff>Shredded</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>80</defaultDamage>
    <defaultStoppingPower>2.5</defaultStoppingPower>
    <defaultArmorPenetration>0.85</defaultArmorPenetration>
	<buildingDamageFactorImpassable>15</buildingDamageFactorImpassable>
    <buildingDamageFactorPassable>15</buildingDamageFactorPassable>
    <plantDamageFactor>15</plantDamageFactor>
	<corpseDamageFactor>2.5</corpseDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>9</explosionHeatEnergyPerCell>
	<explosionCellFleck>Mote_AMW_Nova_Explosion</explosionCellFleck>
    <explosionInteriorFleck></explosionInteriorFleck>
    <explosionColorCenter>(0.5, 0.6, 0.35, 0.9)</explosionColorCenter>
    <explosionColorEdge>(0.5, 0.5, 0.35, 0.22)</explosionColorEdge>
    <soundExplosion>Explosion_Bomb</soundExplosion>
    <combatLogRules>Damage_Bomb</combatLogRules>
  </DamageDef>
  
  
