<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Food crops ==============================-->


  <ThingDef ParentName="PlantBase">
    <defName>Plant_Mealwood</defName>
    <label>Mealwood</label>
    <description>Mealwood is a plant known for producing a sickeningly pungeant odor, which attracts maggots and other edible bugs. Though the plant itself is inedible, the hordes of insects are not. At least in theory.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Beauty>-6</Beauty>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Mealwood</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.70</fertilityMin>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Meat_Megaspider</harvestedThingDef>
      <harvestYield>16</harvestYield>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowResearchPrerequisites>
        <li>TreeSowing</li>
      </sowResearchPrerequisites>
      <sowWork>750</sowWork>
      <topWindExposure>0.35</topWindExposure>
      <growDays>8.5</growDays>
      <immatureGraphicPath>Things/Plant/Mealwood_Immature</immatureGraphicPath>
      <visualSizeRange>0.8~1.5</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>


</Defs>
