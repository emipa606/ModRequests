<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
		<defName>KroganEmpire</defName>
		<label>Krogan Empire</label>
    <description>The formal head of Krogan space.</description>
    <pawnsPlural>Krogan</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Emperor</leaderTitle>
    <startingGoodwill>
      <min>10</min>
      <max>40</max>
    </startingGoodwill>
	<factionNameMaker>NamerFactionOutlander</factionNameMaker>
	<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
	<techLevel>Ultra</techLevel>
	<backstoryCategories>
			<li>KroganBackstory</li>
  	</backstoryCategories>
	<hairTags>
		<li>Urban</li>
		<li>Rural</li>
		<li>Tribal</li>
		<li>Punk</li>
	</hairTags>
    <naturalColonyGoodwill>
      <min>-40</min>
      <max>10</max>
    </naturalColonyGoodwill>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
   <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <KroganChief>10</KroganChief>
          <KroganMechanic>50</KroganMechanic>
          <KroganHunter>50</KroganHunter>
          <KroganElite>50</KroganElite>
          <KroganSoldier>150</KroganSoldier>
          <KroganFarmer>20</KroganFarmer>
          <KroganMiner>50</KroganMiner>
        </options>
      </li>
	  <li>
	  <kindDef>Peaceful</kindDef>
        <options>
          <KroganColonist>50</KroganColonist>
          <KroganHunter>50</KroganHunter>
          <KroganSoldier>250</KroganSoldier>
        </options>
      </li>
	  <li>
      <kindDef>Trader</kindDef>
        <traders>
          <KroganTrader>1</KroganTrader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <KroganColonist>50</KroganColonist>
          <KroganHunter>50</KroganHunter>
          <KroganSoldier>250</KroganSoldier>
        </guards>
      </li>
	  <li>
        <kindDef>Settlement</kindDef>
        <options>
          <KroganColonist>50</KroganColonist>
          <KroganHunter>50</KroganHunter>
          <KroganSoldier>250</KroganSoldier>
        </options>
      </li>
    </pawnGroupMakers>
    <homeIconPath>World/KroganBaseIcon</homeIconPath>
	<expandingIconTexture>World/KroganBaseIcon</expandingIconTexture>
  </FactionDef>

</Defs>