<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--==================== Ancient Structures ====================-->

  	<ThingDef ParentName="AS_BuildingBase">
		<defName>AS_AncientBarricade</defName>
		<label>ancient barricade</label>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<description>An ancient stone barrier. Originally used to line roads, it makes for good cover from enemy fire as well.</description>
		<graphicData>
			<texPath>Things/Building/AS_ancientBarricade_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom1</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<uiIconPath>UI/Icons/AS_ancientBarricade_icon</uiIconPath>
		<statBases>
			<MaxHitPoints>750</MaxHitPoints>
			<WorkToBuild>600</WorkToBuild>
			<Beauty>1</Beauty>
		</statBases>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>10</costStuffCount>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockWind>false</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.75</fillPercent>
		<coversFloor>true</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<holdsRoof>false</holdsRoof>
		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<blockLight>true</blockLight>
		<canOverlapZones>true</canOverlapZones>
		<building>
			<isInert>true</isInert>
		</building>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>1.5</multiplier>
			</li>
		</damageMultipliers>
		<designationCategory>Structure</designationCategory>
    </ThingDef>

  	<ThingDef ParentName="AS_BuildingBase">
		<defName>AS_AncientStonewall</defName>
		<label>stonewall</label>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<description>An ancient wall made of piles of stones. Farmers used to use these to seperate their fields, but they also make good cover from enemy gunfire.</description>
		<graphicData>
			<texPath>Things/Building/AS_stoneWall_atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom2</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<uiIconPath>UI/Icons/AS_stoneWall_icon</uiIconPath>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>400</WorkToBuild>
			<Beauty>2</Beauty>
		</statBases>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>5</costStuffCount>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockWind>false</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.7</fillPercent>
		<coversFloor>true</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<holdsRoof>false</holdsRoof>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<blockLight>true</blockLight>
		<canOverlapZones>true</canOverlapZones>
		<building>
			<isInert>true</isInert>
    		<blueprintGraphicData>
      			<texPath>Things/Building/AS_stoneWall_blueprint_atlas</texPath>
    		</blueprintGraphicData>
		</building>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>0.75</multiplier>
			</li>
		</damageMultipliers>
		<designationCategory>Structure</designationCategory>
    </ThingDef>

    <ThingDef ParentName="AS_BuildingBase">
	    <defName>AS_AncientLamppost</defName>
	    <label>ancient lamppost</label>
		<thingClass>Building</thingClass>
	    <description>A traffic management solution from long ago. It's design is easily copied. Produces a small amount of heat.</description>
	    <category>Building</category>
	    <graphicData>
	      	<texPath>Things/Building/AS_lamppost</texPath>
	      	<graphicClass>Graphic_Single</graphicClass>
	      	<shaderType>Cutout</shaderType>
	      	<drawSize>(1,3)</drawSize>
	      	<drawRotated>false</drawRotated>
	      	<shadowData>
        		<volume>(0.28, 0.5, 0.28)</volume>
				<offset>(0,0,-0.39)</offset>
      		</shadowData>
	    </graphicData>
		<uiIconPath>UI/Icons/AS_lamppost_icon</uiIconPath>
	    <size>(1,1)</size>
	    <rotatable>false</rotatable>
	    <altitudeLayer>Blueprint</altitudeLayer>
	    <passability>PassThroughOnly</passability>
	    <pathCost>8</pathCost>
	    <tickerType>Normal</tickerType>
	    <drawerType>RealtimeOnly</drawerType>
	    <fillPercent>0.15</fillPercent>
	    <statBases>
	      	<MaxHitPoints>300</MaxHitPoints>
      		<WorkToBuild>400</WorkToBuild>
	      	<Flammability>0</Flammability>
			<Beauty>5</Beauty>
	    </statBases>
	    <selectable>true</selectable>
    	<stuffCategories>
      		<li>Stony</li>
    	</stuffCategories>
    	<costStuffCount>15</costStuffCount>
	    <costList>
	      	<WoodLog>20</WoodLog>
	      	<Steel>10</Steel>
	    </costList>
	    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
	    <resourcesFractionWhenDeconstructed>0.5</resourcesFractionWhenDeconstructed>
	    <placeWorkers>
	      	<li>PlaceWorker_Heater</li>
	      	<li>PlaceWorker_NotUnderRoof</li>
	    </placeWorkers>
	    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
	    <comps>
	      	<li Class="CompProperties_Refuelable">
		        <fuelConsumptionRate>2.2</fuelConsumptionRate>
		        <fuelCapacity>20.0</fuelCapacity>
		        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
		        <initialConfigurableTargetFuelLevel>20</initialConfigurableTargetFuelLevel>
		        <fuelFilter>
	          		<thingDefs>
	            		<li>WoodLog</li>
	            		<li>Chemfuel</li>
	          		</thingDefs>
	        	</fuelFilter>
	        	<destroyOnNoFuel>false</destroyOnNoFuel>
	      	</li>
	      	<li Class="CompProperties_Glower">
	        	<glowRadius>15</glowRadius>
	        	<glowColor>(252,187,113,0)</glowColor>
	      	</li>
	      	<li Class="CompProperties_HeatPusher">
	      		<compClass>CompHeatPusherPowered</compClass>
	        	<heatPerSecond>3.5</heatPerSecond>
	        	<heatPushMaxTemperature>23</heatPushMaxTemperature>
	      	</li>
      		<li Class="CompProperties_FireOverlay">
        		<fireSize>0.8</fireSize>
        		<offset>(0,0,1.4)</offset>
      		</li>
	    </comps>
	    <designationCategory>Structure</designationCategory>
  	</ThingDef>

   	<ThingDef ParentName="AS_BuildingBase">
    	<defName>AS_Firepit</defName>
	    <label>fire pit</label>
	    <thingClass>Building_WorkTable</thingClass>
	    <description>Cooks meals and produces heat. Burns out after a few days, but stays in place. As with all heat sources, it must be placed indoors so it has a closed space to heat. Refuelable.</description> <category>Building</category>
	    <graphicData>
	      	<texPath>Things/Building/AS_firePit</texPath>
	      	<graphicClass>Graphic_Single</graphicClass>
	      	<shaderType>Cutout</shaderType>
	      	<drawRotated>false</drawRotated>
	      	<drawSize>(1,1)</drawSize>
	      	<allowFlip>false</allowFlip>
	      	<damageData>
	        	<rect>(0.2,0,0.6,0.1)</rect>
	      	</damageData>
	    </graphicData>
	    <altitudeLayer>Building</altitudeLayer>
	    <passability>PassThroughOnly</passability>
	    <pathCost>50</pathCost>
	    <size>(1,1)</size>
	    <tickerType>Normal</tickerType>
	    <drawerType>RealtimeOnly</drawerType>
	    <fillPercent>0.20</fillPercent>
	    <statBases>
	      	<MaxHitPoints>80</MaxHitPoints>
	      	<WorkToBuild>200</WorkToBuild>
	      	<Flammability>0</Flammability>
			<Beauty>0</Beauty>
	    </statBases>
	    <selectable>true</selectable>
    	<stuffCategories>
      		<li>Stony</li>
    	</stuffCategories>
    	<costStuffCount>15</costStuffCount>
	    <costList>
	      	<WoodLog>20</WoodLog> <!-- the intial wood & maintenance -->
	    </costList>
	    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
	    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
	    <placeWorkers>
	      	<li>PlaceWorker_Heater</li>
	    </placeWorkers>
	    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
	    <comps>
	      	<li Class="CompProperties_Refuelable">
	        	<fuelConsumptionRate>10.0</fuelConsumptionRate>
	        	<fuelCapacity>20.0</fuelCapacity>
	        	<fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
	        	<fuelFilter>
	          		<thingDefs>
	            		<li>WoodLog</li>
	          		</thingDefs>
	        	</fuelFilter>
	        	<destroyOnNoFuel>false</destroyOnNoFuel>
	      	</li>
	      	<li Class="CompProperties_Glower">
	        	<glowRadius>10</glowRadius>
	        	<glowColor>(252,187,113,0)</glowColor>
	      	</li>
	      	<li Class="CompProperties_HeatPusher">
	      		<compClass>CompHeatPusherPowered</compClass>
	        	<heatPerSecond>21</heatPerSecond>
	        	<heatPushMaxTemperature>28</heatPushMaxTemperature>
	      	</li>
	      	<li Class="CompProperties_FireOverlay">
	        	<fireSize>1</fireSize>
        		<offset>(0,0,0.25)</offset>
	      	</li>
	      	<li>
	        	<compClass>CompGatherSpot</compClass>
	      	</li>
	    </comps>
	    <designationCategory>Temperature</designationCategory>
	    <hasInteractionCell>True</hasInteractionCell>
	    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
	    <recipes>
		      <li>CookMealSimple</li>
		      <li>Make_Pemmican</li>
		      <li>BurnApparel</li>
		      <li>BurnDrugs</li>
	    </recipes>
	    <inspectorTabs>
	      	<li>ITab_Bills</li>
	    </inspectorTabs>
	    <building>
	      	<isMealSource>true</isMealSource>
	      	<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
	    </building>
	    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
  	</ThingDef>

</Defs>