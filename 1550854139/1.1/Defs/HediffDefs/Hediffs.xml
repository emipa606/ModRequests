<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>SRV_AteSmokedMeat</defName>
		 <description>A mood boost from eating good food</description>
		<hediffClass>HediffWithComps</hediffClass>
		<label>smoked meat</label>
		<defaultLabelColor>(0.8,0.5,0.5)</defaultLabelColor>
		<initialSeverity>0.8</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.8</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial-hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.01</minSeverity>
				<label>ate smoked meat</label>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>SRV_SnaredLarge</defName>
		<hediffClass>HediffWithComps</hediffClass>
		 <description>The pawn has been caught by a snare! It will probably escape</description>
		<label>snared</label>
		<defaultLabelColor>(0.8,0.5,0.5)</defaultLabelColor>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>0.1</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>500</min>
					<max>5000</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial-hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.001</minSeverity>
				<label>struggling</label>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.95</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.95</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>SRV_SnaredSmall</defName>
		<description>The pawn has been caught by a snare! It will probably die</description>
		<hediffClass>HediffWithComps</hediffClass>
		<label>snared (suffocating)</label>
		<defaultLabelColor>(0.8,0.5,0.5)</defaultLabelColor>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>0.5</initialSeverity>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>10000</min>
					<max>240000</max>
				</disappearsAfterTicks>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>1</severityPerDay>
			  </li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>12</baseTendDurationHours>
				<severityPerDayTended>-0.53</severityPerDayTended>
			  </li>
		</comps>
		<stages>
			<li>
				<label>minor-hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.001</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.400</minSeverity>
				<label>major</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.700</minSeverity>
				<label>extreme</label>
				<painOffset>0.5</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.7</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.999</minSeverity>
				<label>limit</label>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.9</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<setMax>0</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>