<?xml version="1.0" encoding="utf-8" ?>
<Defs>  

	<ThingDef ParentName="ResourceBase">
		<defName>SRV_Charcoal</defName>
		<label>charcoal</label>
		<description>A chunk of wood that has been charred until only carbon remains. Used as fuel for grills and smokers.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Charcoal</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<onGroundRandomRotateAngle>45</onGroundRandomRotateAngle>
		</graphicData>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>0.6</MarketValue>
			<Mass>0.1</Mass>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>5</DeteriorationRate>
			<WorkToMake>1200</WorkToMake>
		</statBases>
		<stackLimit>75</stackLimit>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="RoughPlantBase">
		<defName>SRV_JuteFibers</defName>
		<label>jute fibers</label>
		<description>Long fibers from jute stalks. Can be made into burlap cloth or used as animal feed.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/JuteFiber</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>1.1</MarketValue>
			<Mass>0.016</Mass>
			<Nutrition>0.04</Nutrition>
		</statBases>
		<stackLimit>100</stackLimit>
		<ingestible />
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>60</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<thingCategories>
			<li>PlantMatter</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>SRV_Burlap</defName>
		<label>burlap</label>
		<description>Thick fibrous cloth woven from plant matter. It is a somewhat itchy material, and is best used for outer garments.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Burlap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<MarketValue>1.5</MarketValue>
			<Mass>0.032</Mass>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>3</DeteriorationRate>
		</statBases>
		<stuffProps>
			<categories>
				<li>Fabric</li>
			</categories>
			<color>(191,174,145)</color>
			<commonality>0.3</commonality>
			<statOffsets>
				<ArmorRating_Blunt>0.03</ArmorRating_Blunt>
				<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
			</statOffsets>
			<statFactors>
				<WorkToMake>0.8</WorkToMake>
				<Insulation_Cold>0.85</Insulation_Cold>
				<Insulation_Heat>1.15</Insulation_Heat>
			</statFactors>
		</stuffProps>
		<thingCategories>
			<li>Textiles</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>SRV_VinegarJuice</defName>
		<label>vinegar juice</label>
		<description>Concentrated fruit juice. This substance needs to ferment in a fermenting barrel before it becomes usable vinegar.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Juice_Vinegar</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<stackLimit>25</stackLimit>
		<statBases>
			<MarketValue>2.5</MarketValue>
			<DeteriorationRate>1</DeteriorationRate>
			<Mass>0.8</Mass>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>5</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="ResourceBase">
		<defName>SRV_CurdledMilk</defName>
		<label>curdled milk</label>
		<description>Milk that has been safely curdled. This substance needs to ferment and age in a cheese barrel before it becomes edible cheese.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/CurdledMilk</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<stackLimit>25</stackLimit>
		<statBases>
			<MarketValue>3.3</MarketValue>
			<DeteriorationRate>1</DeteriorationRate>
			<Mass>0.75</Mass>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>2</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>SRV_Vinegar</defName>
		<label>vinegar</label>
		<description>A mildly acidic liquid used for pickling vegetables or curdling milk for cheesemaking.</description>
		<graphicData>
			<texPath>Cupro/Item/Material/Vinegar</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<MarketValue>12</MarketValue>
			<Mass>0.5</Mass>
			<SellPriceFactor>0.75</SellPriceFactor>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
		<tradeTags>
			<li>Exotic</li>
		</tradeTags>
	</ThingDef>

</Defs>