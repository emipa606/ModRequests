<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>SRV_CharcoalPit</defName>
		<label>charcoal pit</label>
		<description>A pit dug into the ground for burning wood in the absence of oxygen.</description>
		<graphicData>
			<texPath>Cupro/Object/Utility/CharcoalPit/EmptyPit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<constructEffect>ConstructDirt</constructEffect>
		<blockLight>false</blockLight>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>false</rotatable>
		<useHitPoints>false</useHitPoints>
		<fillPercent>0</fillPercent>
		<statBases>
			<WorkToBuild>500</WorkToBuild>
			<Flammability>0</Flammability>
		</statBases>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<canOverlapZones>false</canOverlapZones>
		<pathCost>60</pathCost>
		<surfaceType>Item</surfaceType>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable" />
			<li Class="UniversalFermenter.CompProperties_UniversalFermenter">
			<processes>
				<li>
					<thingDef>SRV_Charcoal</thingDef>
					<ingredientFilter>
						<thingDefs>
							<li>WoodLog</li>
						</thingDefs>
					</ingredientFilter>
					<usesTemperature>false</usesTemperature>
					<processDays>4</processDays>
				</li>
			</processes>
	  </li>
		</comps>
		<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
		<!--<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>-->
	</ThingDef>

	<ThingDef ParentName="SRV_OutdoorBenchBase">
		<defName>SRV_Smoker</defName>
		<label>smoker</label>
		<!--<thingClass>SurvivalistsAdditions.Building_Smoker</thingClass>-->
		<description>A large stone smoker built for cooking and preserving a large amount of meat. Takes a long time to cook.</description>
		<graphicData>
			<texPath>Cupro/Object/Station/Smoker/Smoker</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<uiIconPath>Cupro/Object/Station/Smoker/Smoker_MenuIcon</uiIconPath>
		<fillPercent>0.9</fillPercent>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<useHitPoints>true</useHitPoints>
		<rotatable>true</rotatable>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>2000</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>10</Beauty>
			<Cleanliness>-5</Cleanliness>
			<Mass>185</Mass>
		</statBases>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<canOverlapZones>false</canOverlapZones>
		<pathCost>80</pathCost>
		<surfaceType>Item</surfaceType>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable" />
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>75.0</fuelConsumptionRate>
				<fuelCapacity>40.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>SRV_Charcoal</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
			<li Class="UniversalFermenter.CompProperties_UniversalFermenter">
				<processes>
					<li>
						<thingDef>SRV_SmokedCheese</thingDef>
						<ingredientFilter>
							<thingDefs>
								<li>SRV_Cheese</li>
							</thingDefs>
						</ingredientFilter>
						<processDays>2</processDays>
						<temperatureSafe>-1.0~35.0</temperatureSafe>
					</li>
					<li>
						<thingDef>SRV_SmokedMeat</thingDef>
						<ingredientFilter>
							 <categories>
								<li>MeatRaw</li>
							  </categories>
							   <disallowedThingDefs>
								<li>SRV_SmokedMeat</li>
								<!--<li>Meat_Human</li>
								<li>Meat_Megaspider</li>-->
							  </disallowedThingDefs>
						</ingredientFilter>
						<processDays>2</processDays>
						<temperatureSafe>-1.0~35.0</temperatureSafe>
					</li>
				</processes>
			</li>
			<li Class="SurvivalistsAdditions.CompProperties_Smoker">
				<smokeStyle>None</smokeStyle>
				<offset>(0.5,0,1)</offset>
				<produceSmokeOnlyWhenUsed>true</produceSmokeOnlyWhenUsed>
				<size>0.75</size>
			</li>
		</comps>
		<!--<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>-->
	</ThingDef>

</Defs>