	<RecipeDef Name="SRV_RecipePickleBase" Abstract="True">
		<jobString>Pickling.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SRV_Vinegar</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<recipeUsers>
			<li>SRV_TableCamp</li>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

	<RecipeDef ParentName="SRV_RecipePickleBase">
		<defName>SRV_PickleGeneric</defName>
		<label>pickle vegetables</label>
		<description>Preserve vegetables or fruit in vinegar. Can be eaten by itself, or used in meals.</description>
		<allowMixingIngredients>True</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<SRV_PickledGeneric>1</SRV_PickledGeneric>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
			<disallowedCategories>
			<li>srv_pickled</li>
				</disallowedCategories>
			<specialFiltersToDisallow>
				<li>AllowPlantFood</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
			<disallowedCategories>
				<li>EggsUnfertilized</li>
				<li>EggsFertilized</li>
				<li>srv_pickled</li>
			</disallowedCategories>
			<disallowedThingDefs>
				<li>Hay</li>
				<li>SRV_JuteFibers</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
	</RecipeDef>

