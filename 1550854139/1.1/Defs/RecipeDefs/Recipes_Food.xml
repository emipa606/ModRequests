<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="SRV_GrilledMealBase" Abstract="True">
		<jobString>Grilling.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

	<RecipeDef Name="SRV_GrillMealBase_Meat" ParentName="SRV_GrilledMealBase" Abstract="True">
		<fixedIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
			<disallowedThingDefs>
				<li>Meat_Human</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
	</RecipeDef>

	<RecipeDef Name="SRV_GrillMealBase_Veg" ParentName="SRV_GrilledMealBase" Abstract="True">
		<fixedIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
			<specialFiltersToDisallow>
				<li>AllowPlantFood</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
			<disallowedCategories>
				<li>EggsUnfertilized</li>
				<li>EggsFertilized</li>
			</disallowedCategories>
			<disallowedThingDefs>
				<li>Hay</li>
				<li>SRV_JuteFibers</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
	</RecipeDef>

	
	<RecipeDef ParentName="SRV_GrillMealBase_Meat">
		<defName>SRV_GrillMealMeat</defName>
		<label>grill meat (1)</label>
		<description>Prepares a grilled meal consisting of meat. Takes a while, but adds a good flavor.</description>
		<workAmount>600</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>0.5</count>
			</li>
		</ingredients>
		<products>
			<SRV_MealGrilledMeat>1</SRV_MealGrilledMeat>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="SRV_GrillMealBase_Meat">
		<defName>SRV_GrillMealMeatDouble</defName>
		<label>grill meat (2)</label>
		<description>Prepares two grilled meals consisting of meat. Takes a while, but adds a good flavor.</description>
		<workAmount>900</workAmount>
		<targetCountAdjustment>2</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<SRV_MealGrilledMeat>2</SRV_MealGrilledMeat>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="SRV_GrillMealBase_Veg">
		<defName>SRV_GrillMealVeg</defName>
		<label>grill vegetarian (1)</label>
