	<RecipeDef ParentName="SRV_GrilledMealBase">
		<defName>SRV_GrillMealFine</defName>
		<label>grill fine meal</label>
		<description>Prepares a fine grilled meal. Takes a while, but adds a good flavor.</description>
		<workAmount>900</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>0.25</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>0.25</count>
			</li>
		</ingredients>
		<products>
			<SRV_MealGrilledFine>1</SRV_MealGrilledFine>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<specialFiltersToDisallow>
				<li>AllowPlantFood</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<disallowedCategories>
				<li>EggsUnfertilized</li>
				<li>EggsFertilized</li>
			</disallowedCategories>
			<disallowedThingDefs>
				<li>Meat_Human</li>
				<li>Hay</li>
				<li>SRV_JuteFibers</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Cooking>5</Cooking>
		</skillRequirements>
	</RecipeDef>


	<RecipeDef Name="SaladBase" Abstract="True">
		<jobString>Chopping.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>SRV_TableCamp</li>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

	<RecipeDef ParentName="SaladBase">
		<defName>SRV_PrepSalad</defName>
		<label>prepare turnip salad</label>
		<description>Prepare a salad using turnip greens and vegetables.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SRV_Turnip_Green</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
					<disallowedThingDefs>
						<li>SRV_Turnip_Green</li>
					</disallowedThingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<SRV_MealTurnipSalad>1</SRV_MealTurnipSalad>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
			<specialFiltersToDisallow>
				<li>AllowPlantFood</li>
			</specialFiltersToDisallow>
			<thingDefs>
				<li>SRV_Turnip_Green</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
			<thingDefs>
				<li>SRV_Turnip_Green</li>
			</thingDefs>
			<disallowedCategories>
				<li>EggsUnfertilized</li>
				<li>EggsFertilized</li>
			</disallowedCategories>
			<disallowedThingDefs>
				<li>Hay</li>
				<li>SRV_JuteFibers</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
	</RecipeDef>

