<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>MorrowRim - Volcanic Ashlands</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
            		<!--designatorDropdown, costList, designationCategory-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName = "MorrowRim_VolcanicAsh"]</xpath>
                    <value>
                      <placeWorkers>
												<li>SR.PlaceWorker_Soil</li>
											</placeWorkers>
											<costList>
												<SR_Soil>10</SR_Soil>
												<SG_VolcanicAsh>10</SG_VolcanicAsh>
											</costList>
											<designatorDropdown>SR</designatorDropdown>
											<designationCategory>Floors</designationCategory>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName = "MorrowRim_VolcanicCrackedGround"]</xpath>
                    <value>
                      <placeWorkers>
												<li>SR.PlaceWorker_Soil</li>
											</placeWorkers>
											<costList>
												<SG_DepletedSoil>10</SG_DepletedSoil>
												<SG_VolcanicAsh>8</SG_VolcanicAsh>
											</costList>
											<designatorDropdown>SR</designatorDropdown>
											<designationCategory>Floors</designationCategory>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName = "MorrowRim_RichVolcanicAsh"]</xpath>
                    <value>
                      <placeWorkers>
												<li>SR.PlaceWorker_Soil</li>
											</placeWorkers>
											<costList>
												<SR_RichSoil>10</SR_RichSoil>
												<SG_VolcanicAsh>10</SG_VolcanicAsh>
											</costList>
											<designatorDropdown>SR</designatorDropdown>
											<designationCategory>Floors</designationCategory>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName = "MorrowRim_VolcanicGravel"]</xpath>
                    <value>
                      <placeWorkers>
												<li>SR.PlaceWorker_Soil</li>
											</placeWorkers>
											<costList>
												<SG_Gravel>10</SG_Gravel>
												<SG_VolcanicAsh>8</SG_VolcanicAsh>
											</costList>
											<designatorDropdown>SR</designatorDropdown>
											<designationCategory>Floors</designationCategory>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName = "MorrowRim_VolcanicSand"]</xpath>
                    <value>
                      <placeWorkers>
												<li>SR.PlaceWorker_Soil</li>
											</placeWorkers>
											<costList>
												<SR_Sand>8</SR_Sand>
												<SG_VolcanicAsh>8</SG_VolcanicAsh>
											</costList>
											<designatorDropdown>SR</designatorDropdown>
											<designationCategory>Floors</designationCategory>
                    </value>
                </li>

								<!--WorkToBuild, MarketValue-->
                <li Class="PatchOperationAdd">
									<xpath>/Defs/TerrainDef[defName = "MorrowRim_VolcanicAsh"]/statBases</xpath>
									<value>
										<WorkToBuild>200</WorkToBuild>
										<MarketValue>0</MarketValue>
									</value>
								</li>

								<li Class="PatchOperationAdd">
									<xpath>/Defs/TerrainDef[defName = "MorrowRim_VolcanicCrackedGround"]/statBases</xpath>
									<value>
										<WorkToBuild>200</WorkToBuild>
										<MarketValue>0</MarketValue>
									</value>
								</li>

								<li Class="PatchOperationAdd">
									<xpath>/Defs/TerrainDef[defName = "MorrowRim_RichVolcanicAsh"]/statBases</xpath>
									<value>
										<WorkToBuild>200</WorkToBuild>
										<MarketValue>0</MarketValue>
									</value>
								</li>

								<li Class="PatchOperationAdd">
									<xpath>/Defs/TerrainDef[defName = "MorrowRim_VolcanicGravel"]/statBases</xpath>
									<value>
										<WorkToBuild>200</WorkToBuild>
										<MarketValue>0</MarketValue>
									</value>
								</li>

								<li Class="PatchOperationAdd">
									<xpath>/Defs/TerrainDef[defName = "MorrowRim_VolcanicSand"]/statBases</xpath>
									<value>
										<WorkToBuild>200</WorkToBuild>
										<MarketValue>0</MarketValue>
									</value>
								</li>
						</operations>
				</match>
		</Operation>
</Patch>