<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<RecipeDef MayRequire="sarg.alphabiomes">
		<defName>SG_ParchedMudRecipe</defName>
		<label>make parched mud from mud and compost</label>
		<description>Make parched mud from mud and compost.</description>
		<jobString>Making parched mud.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>200</workAmount>
		<targetCountAdjustment>10</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WHC_Compost</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SG_Mud</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WHC_Compost</li>
				<li>SG_Mud</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<SG_ParchedMud>1</SG_ParchedMud>
		</products>
		<recipeUsers>
			<li>SG_GardeningTable</li>
		</recipeUsers>
	</RecipeDef>
	
