<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Tall bamboo Tree -->
  
    <Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "HSPlant_TallBambooTree"]/plant</xpath>
		<value>
			<harvestedThingDef>Bamboo</harvestedThingDef>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "HSPlant_TallBambooTree"]/plant</xpath>
		<value>
			<harvestTag>Wood</harvestTag>
		</value>
	</Operation>

  <!-- Bamboo Stalk -->
  
    <Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "HSPlant_SingleBambooTree"]/plant</xpath>
		<value>
			<harvestedThingDef>Bamboo</harvestedThingDef>
		</value>
	</Operation>

	 <Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName = "HSPlant_SingleBambooTree"]/plant</xpath>
		<value>
			<harvestTag>Wood</harvestTag>
		</value>
	</Operation>

</Patch>