<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ========================= USCM - Headband ========================== -->
	<ThingDef ParentName="AvP_USCM_HeadgearBase">
    <defName>AvP_USCM_Headgear_Bandana</defName>
    <label>war bandana</label>
    <description>A badass bandana. Doesn't offer much protection, but the ego boost will let you overcome impossible odds.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Things/Apparel/USCM/Clothing/Headband/ColonialMarineHeadband</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
    <statBases>
      <WorkToMake>1250</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.06</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PainShockThreshold>0.08</PainShockThreshold>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/USCM/Clothing/Headband/ColonialMarineHeadband</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <tags>
			<li>USCM_StandardIssue_Apparel</li>
			<li>USCM_Bandana</li>
			<li>USCM_Clothing</li>
	  </tags>
    </apparel>
    <recipeMaker>
    </recipeMaker>
		<tradeTags>
			<li>AvP_USCM_Apparel</li>
		</tradeTags>
  </ThingDef>
	
  <!-- ========================= USCM - Military Cap ========================== -->
	<ThingDef ParentName="AvP_USCM_HeadgearBase">
		<defName>AvP_USCM_Headgear_Cap</defName>
		<label>Military Cap</label>
		<description>Standard issue sun specific personal protection.</description>
		<graphicData>
			<texPath>Things/Apparel/USCM/Clothing/Cap/ColonialMarineCap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		 <costStuffCount>25</costStuffCount>
		<stuffCategories>
		  <li>Fabric</li>
		  <li>Leathery</li>
		</stuffCategories>
		<statBases>
		  <WorkToMake>1700</WorkToMake>
		  <Mass>0.14</Mass>
		  <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
		  <StuffEffectMultiplierInsulation_Cold>0.12</StuffEffectMultiplierInsulation_Cold>
		  <StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
		  <EquipDelay>0.6</EquipDelay>
		</statBases>
		<equippedStatOffsets>
		  <SocialImpact>0.12</SocialImpact>
		</equippedStatOffsets>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<apparel>
		  <bodyPartGroups>
			<li>UpperHead</li>
		  </bodyPartGroups>
		  <wornGraphicPath>Things/Apparel/USCM/Clothing/Cap/ColonialMarineCap</wornGraphicPath>
		  <layers>
			<li>Overhead</li>
		  </layers>
		  <tags>
			<!--li>IndustrialBasic</li>
			<li>IndustrialMilitaryBasic</li-->
			<li>USCM_StandardIssue_Apparel</li>
			<li>USCM_Clothing</li>
			<li>USCM_Cap</li>
		  </tags>
		  <defaultOutfitTags>
			<li>Worker</li>
			<li>Soldier</li>
		  </defaultOutfitTags>
		</apparel>
		<tradeTags>
			<li>Apparel</li>
		</tradeTags>
	</ThingDef>
	
