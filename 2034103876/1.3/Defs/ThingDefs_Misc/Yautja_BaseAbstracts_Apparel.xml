	</ThingDef>	
	
	<!-- ========================= Yautja - Equipment base ========================== -->
	<ThingDef Name="AvP_Yautja_EquipmentBase" ParentName="AvP_Yautja_Apparel_MakeableBase" Abstract="true">
		<description>Advanced equipment of the Yautja</description>
		<apparel>
			<tags>
