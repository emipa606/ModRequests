<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ========================= Yautja - Apparel ========================== -->
  <!-- ========================= Yautja - Hunter Vest ========================== -->
	<ThingDef ParentName="AvP_Yautja_Apparel_MakeableBase">
		<defName>AvP_Yautja_Apparel_HunterVest</defName>
		<label>Yautja Vest</label>
		<description>It's a vest godarnit! XD</description>
		<graphicData>
			<texPath>Things/Apparel/Yautja_Vest/Yautja_Vest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1800</WorkToMake>
			<Mass>0.4</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Yautja_Vest/Yautja_Vest</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>YautjaApparel</li>
				<li>YautjaWebbing</li>
			</tags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>AvP_Tech_Yautja_T1</researchPrerequisite>
			<recipeUsers>
				<li>AvP_Yautja_TableMachining</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.9,0.9,0.9)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>(0.8,0.8,0.8)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>(0.95,0.95,0.95)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
  <!-- ====================================== Tribal Cloak =========================================== -->
	<ThingDef ParentName="AvP_Yautja_Apparel_MakeableBase">
		<defName>AvP_Yautja_Apparel_TribalCloak</defName>
		<label>tribalcloak</label>
		<description>A full-body garment crafted using neolithic tools. While it may look primitive, it is effective at insulating the wearer.</description>
		<graphicData>
			<texPath>Things/Apparel/Yautja_Cloak/YautjaCloak</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		  <shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costStuffCount>70</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1800</WorkToMake>
			<Mass>0.4</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
		</statBases>
		<apparel>
		<useWornGraphicMask>true</useWornGraphicMask>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Yautja_Cloak/YautjaCloak</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Neolithic</li>
			</tags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>AvP_Yautja_TableMachining</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.4,0.3,0.15)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>(0.6,0.45,0.18)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>(0.8,0.6,0.23)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

  <!-- ========================= Yautja - Heated Mesh ========================== -->
