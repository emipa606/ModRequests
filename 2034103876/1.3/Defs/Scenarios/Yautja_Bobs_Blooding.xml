<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ScenarioDef>
	<defName>AvP_YautjaScenarioBobsBlooding</defName>
		<label>Yautja Blooding Ritual</label>
		<description>Five Unblooded Yautja are given eight cryptocaskets containing Xenomorph eggs and human sacrifices for them. It is your mission to build a temple worthy of this hunt and become full fledged Hunters.\n\nNote: The Sacrifices will try to run away once the caskets are open. </description>
<scenario>
<summary>Five Unblooded Yautja must build a temple for the Blooding. Difficult.</summary>
		<playerFaction>
			<def>PlayerFaction</def>
			<factionDef>AvP_Yautja_PlayerBlooding</factionDef>
		</playerFaction>
		<parts>
			<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
				<def>ConfigPage_ConfigureStartingPawns</def>
				<pawnCount>5</pawnCount>
			</li>
			<li Class="ScenPart_PlayerPawnsArriveMethod">
				<def>PlayerPawnsArriveMethod</def>
				<method>DropPods</method>
				<visible>true</visible>
			</li>
			
			<!--
			<li Class="RRYuatja.ScenPart_StartTemple">
				<def>StartTemple</def>
				<inhabitantKind>Abandoned</inhabitantKind>
			</li>
			-->
			
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>ComponentIndustrial</thingDef>
				<count>30</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>MealSurvivalPack</thingDef>
				<count>50</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>MedicineIndustrial</thingDef>
				<count>15</count>
			</li>
			<li Class="ScenPart_ScatterThingsNearPlayerStart">
				<def>ScatterThingsNearPlayerStart</def>
				<thingDef>BlocksGranite</thingDef>
				<count>1000</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>AvP_Yautja_Melee_Combistaff</thingDef>
				<count>1</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>AvP_Yautja_Gun_Compound_Bow</thingDef>
				<count>1</count>
				<stuff>Steel</stuff>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>AvP_Yautja_Gun_Needler</thingDef>
				<count>1</count>
			</li>
			
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>AvP_Yautja_Gun_SpearRifle</thingDef>
				<count>1</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>AvP_Yautja_Gun_SmartDisk</thingDef>
				<count>1</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>AvP_Yautja_Melee_BladedMaul</thingDef>
				<count>1</count>
				<stuff>Steel</stuff>
			</li>
			<li Class="ScenPart_ScatterThingsNearPlayerStart">
				<def>ScatterThingsNearPlayerStart</def>
				<thingDef>AvP_Yautja_CryptosleepCasket_Tribute_XenoEgg</thingDef>
				<count>8</count>
			</li>
			
			<li Class="ScenPart_GameStartDialog">
				<def>GameStartDialog</def>
				<text>You are sent to your blooding ritual. The Elders expect you to do it with Honor and come back to the clan covered in Glory.</text>
				<closeSound>GameStartSting</closeSound>
			</li>
			<li Class="ScenPart_ScatterThingsAnywhere">
				<def>ScatterThingsAnywhere</def>
				<thingDef>ShipChunk</thingDef>
				<count>10</count>
			</li>
			<li Class="ScenPart_ScatterThingsAnywhere">
				<def>ScatterThingsAnywhere</def>
				<thingDef>Steel</thingDef>
				<count>720</count>
			</li>
		</parts>
		</scenario>
	</ScenarioDef>
	
</Defs>