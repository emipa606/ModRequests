<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Acid Resistance Patch -->
	<Operation Class="PatchOperationSequence">
		<operations>
		
			<!-- Plasteel -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Plasteel"]/statBases</xpath>
				<value>
					<AvP_StuffPower_Armor_Acid>0.5</AvP_StuffPower_Armor_Acid>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Plasteel"]/stuffProps/statFactors</xpath>
				<value>
					<AvP_AcidResistance>0.25</AvP_AcidResistance>
				</value>
			</li>
			
			<!-- Silver -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Silver"]/statBases</xpath>
				<value>
					<AvP_StuffPower_Armor_Acid>0.75</AvP_StuffPower_Armor_Acid>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Silver"]/stuffProps/statFactors</xpath>
				<value>
					<AvP_AcidResistance>0.375</AvP_AcidResistance>
				</value>
			</li>
		</operations>	
	</Operation>

</Patch>
