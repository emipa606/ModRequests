<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ================================ Rhynth ================================ -->
  <ThingDef ParentName="AnimalThingBase">
    <defName>AvP_Rhynth</defName>
    <label>Rhynth</label>
    <description>Despite being herbivorous, this large mammal is very easy to enrage. Once angered, its massive strength and sharp horn make it a brutal opponent. It has more muscle in one leg than most humans do in their whole body.</description>
    <statBases>
      <MoveSpeed>5.0</MoveSpeed>
      <MarketValue>700</MarketValue>
      <ComfyTemperatureMin>-8</ComfyTemperatureMin>
    </statBases>
    <tools>
      <li>
        <label>horn</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>horn</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithHoovesAndHorn</body>
      <baseHungerRate>1.5</baseHungerRate>
      <baseBodySize>3.0</baseBodySize>
      <baseHealthScale>3.5</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>AvP_Leather_Rhynth</leatherDef>
      <wildness>0.90</wildness>
      <manhunterOnTameFailChance>0.10</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.10</manhunterOnDamageChance>
      <gestationPeriodDays>43</gestationPeriodDays>
      <nameOnTameChance>1</nameOnTameChance>
      <lifeExpectancy>45</lifeExpectancy>
      <herdAnimal>true</herdAnimal>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.3</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>1.0</minAge>
          <soundWounded>Pawn_Rhinoceros_Wounded</soundWounded>
          <soundDeath>Pawn_Rhinoceros_Death</soundDeath>
          <soundCall>Pawn_Rhinoceros_Call</soundCall>
          <soundAngry>Pawn_Rhinoceros_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>
