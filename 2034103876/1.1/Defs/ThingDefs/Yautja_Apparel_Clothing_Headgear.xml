<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ========================= Yautja - Apparel ========================== -->  <!-- ========================= Yautja - Light Bio Mask ========================== -->
	<ThingDef ParentName="AvP_Yautja_HeadgearBase">
		<defName>AvP_Yautja_Apparel_TribalMask</defName>
		<label>Yautja Tribal Mask</label>
		<description>A light Tribal mask, the ancestor of the standard Yautja bio mask. The helmet offers far less protection than .</description>
		<graphicData>
		<texPath>Things/Apparel/Yautja_Light_Armour_Helmet/Yautja_LightArmour_Helmet_B</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<Mass>0.15</Mass>
			<MarketValue>100</MarketValue>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
			<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.10</ArmorRating_Blunt>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<Insulation_Heat>1</Insulation_Heat>
			<Insulation_Cold>1</Insulation_Cold>
		</statBases>
		<equippedStatOffsets>
			<PsychicSensitivity>-0.10</PsychicSensitivity>
		</equippedStatOffsets>
		<costList>
			<WoodLog>30</WoodLog>
		</costList>
		<recipeMaker>
			<researchPrerequisite>AvP_Tech_Yautja_T1</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Yautja_Light_Armour_Helmet/Yautja_LightArmour_Helmet_B</wornGraphicPath>
			<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>			
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>YautjaTribalMask</li>
			</tags>
		</apparel>
	</ThingDef>

</Defs>