<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
<!-- ========================= USCM - M10 Pattern Ballistic Helmet ========================== -->
	<ThingDef ParentName="AvP_USCM_ArmourHeadgearBase">
		<defName>AvP_USCM_Headgear_M10PAttern</defName>
		<label>M10 Pattern Ballistic Helmet</label>
		<description>The M10 Pattern Ballistic Helmet is a helmet used primarily by the United States Colonial Marine Corps in conjunction with the M3 Pattern Personal Armour. In addition to providing head protection, it features an integrated video camera, infrared sight, transmitter and microphone.</description>
		<graphicData>
		<texPath>Things/Apparel/USCM/Helmets/M10Pattern/ColonialMarineHelmet</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>350</MarketValue>
			<WorkToMake>21000</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>1.7</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.85</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.42</ArmorRating_Blunt>
			<ArmorRating_Heat>0.9</ArmorRating_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<Insulation_Heat>2</Insulation_Heat>
			<EquipDelay>2.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<Plasteel>10</Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<recipeMaker>
			<researchPrerequisite>AvP_USCM_CarapaceArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
		</recipeMaker>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/USCM/Helmets/M10Pattern/ColonialMarineHelmet</wornGraphicPath>
			<!--hatRenderedFrontOfFace>false</hatRenderedFrontOfFace-->			
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>USCM_M10Pattern</li>
				<li>USCM_StandardIssue_Armour</li>
				<li>USCM_Armour</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<tradeTags>
			<li>AvP_USCM_Headgear</li>
		</tradeTags>
	</ThingDef>
	
<!-- ========================= USCM - M3 Pattern Personal Armour ========================== -->
	<ThingDef ParentName="AvP_USCM_Armour_MakeableBase">
		<defName>AvP_USCM_Armour_M3Pattern</defName>
		<label>M3 Pattern Personal Armour</label>
		<description>The M3 Pattern Personal Armour is the standard ballistic protective armour system employed by the United States Colonial Marine Corps. Manufactured by Armat Battlefield Systems, it is designed to balance lightness and comfort with optimum protection. The M3 system is primarily concerned with protecting the user's torso only.</description>
		<graphicData>
			<texPath>Things/Apparel/USCM/Armour/M3Pattern/USCM_M3Pattern</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>1000</MarketValue>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToMake>23000</WorkToMake>
			<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.30</ArmorRating_Sharp>
			<ArmorRating_Heat>0.20</ArmorRating_Heat>
			<Insulation_Heat>6</Insulation_Heat>
			<Insulation_Cold>10</Insulation_Cold>
			<Mass>4.5</Mass>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.06</MoveSpeed>
			<WorkSpeedGlobal>-0.08</WorkSpeedGlobal>
		</equippedStatOffsets>
		<costList>
			<Steel>25</Steel>
			<Plasteel>10</Plasteel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<researchPrerequisite>AvP_USCM_CarapaceArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Neck</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/USCM/Armour/M3Pattern/USCM_M3Pattern</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>USCM_StandardIssue_Armour</li>
				<li>USCM_M3Pattern</li>
				<li>USCM_Armour</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<tradeTags>
			<li>AvP_USCM_Apparel</li>
		</tradeTags>
	</ThingDef>
	
