<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceVerbBase">
    <defName>AvP_Xenomorph_TailSpike</defName>
    <label>xenomorph tailspike</label>
    <description>A xenomorph's tailspike. It's razor-sharp, rock-hard, and priceless in most markets. This is a true trophy, as well as a deadly melee weapon.</description>
    <graphicData>
      <texPath>Things/Item/Special/Xeno_Tail</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <statBases>
      <AvP_AcidResistance>1</AvP_AcidResistance>
      <MarketValue>400</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.4</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>10</stackLimit>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>28</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>base</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>
  </ThingDef>
  
  <ThingDef ParentName="ResourceBase">
    <defName>AvP_Xenomorph_Shell</defName>
    <label>xenomorph carapace</label>
    <description>The carapace from a xenomorph's head. It's polarized silica making it immune to acidic effects, and priceless in most markets. This is a true trophy.</description>
    <graphicData>
      <texPath>Things/Item/Special/Xeno_Shell</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <statBases>
      <AvP_AcidResistance>1</AvP_AcidResistance>
      <MarketValue>200</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.4</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>10</stackLimit>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>
  </ThingDef>
  
</Defs>
