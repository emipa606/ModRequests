	<!-- ========================= Yautja - Hunter Light Armour Chestplate ========================== -->
	<ThingDef ParentName="AvP_Yautja_Armour_Base">
		<defName>AvP_Yautja_Armour_ChestplateLight</defName>
		<label>Yautja Light Chestplate</label>
		<description>A light chestplate designed with freedom of movements in mind.</description>
		<graphicData>
			<texPath>Things/Apparel/Yautja_Light_Armour/Yautja_LightArmour</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>1500</MarketValue>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToMake>30000</WorkToMake>
			<ArmorRating_Sharp>1.15</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.56</ArmorRating_Blunt>
			<ArmorRating_Heat>0.57</ArmorRating_Heat>
			<Insulation_Heat>6</Insulation_Heat>
			<Insulation_Cold>6</Insulation_Cold>
			<Mass>3</Mass>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>+0.2</MoveSpeed>
			
		<!--
			<ShootingAccuracyPawn>0.25</ShootingAccuracyPawn>
			<PsychicSensitivity>-0.10</PsychicSensitivity>
			<ToxicResistance>0.5</ToxicResistance>
			-->
