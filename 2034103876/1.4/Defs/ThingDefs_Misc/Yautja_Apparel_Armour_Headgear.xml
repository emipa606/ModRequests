<Defs>
  <!-- ========================= Yautja - Armoured Headgear ========================== -->
  <!-- ========================= Yautja - Light Bio Mask ========================== -->
	<ThingDef ParentName="AvP_Yautja_ArmourHeadgearBase">
		<defName>AvP_Yautja_Armour_BioMaskLight</defName>
		<label>Yautja Light Bio Mask</label>
		<description>A lighter variant of the standard Yautja bio mask. The helmet offers less protection than the standard variant while still incorporating a respirator to avoid inhaling toxic compounds. The helmet is also equipped with more advanced targeting system and vision enhancing utilities.</description>
		<graphicData>
		<texPath>Things/Apparel/Yautja_Light_Armour_Helmet/Yautja_LightArmour_Helmet</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<Mass>0.25</Mass>
			<MarketValue>500</MarketValue>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>25000</WorkToMake>
			<ArmorRating_Sharp>0.7</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Heat>3</Insulation_Heat>
			<Insulation_Cold>10</Insulation_Cold>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.35</ShootingAccuracyPawn>
			<PsychicSensitivity>-0.10</PsychicSensitivity>
			<ToxicEnvironmentResistance>0.55</ToxicEnvironmentResistance>
		</equippedStatOffsets>
		<costList>
			<Plasteel>30</Plasteel>
			<Uranium>15</Uranium>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<recipeMaker>
			<researchPrerequisite>AvP_Tech_Yautja_T2</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Yautja_Light_Armour_Helmet/Yautja_LightArmour_Helmet</wornGraphicPath>
			<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>			
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>YautjaLightBioMask</li>
				<li>YautjaLightArmour</li>
			</tags>
		</apparel>
	</ThingDef>

