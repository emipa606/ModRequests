<?xml version="1.0" encoding="utf-8"?>
<!-- The def for the chocolate recipe -->

<Defs>
  <RecipeDef>
    <defName>Make_WhiteChocolate</defName>
    <label>make white chocolate</label>
    <description>Make chocolate from raw cocoa and milk, harvested from cocoa trees.</description>
    <jobString>Making white chocolate</jobString>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>500</workAmount>
    <targetCountAdjustment>30</targetCountAdjustment>
    <ingredients>
      <li>
	    <filter>
	      <thingDefs>
		    <li>RawCocoa</li>
		  </thingDefs>
	    </filter>
	    <count>15</count>
	  </li>
	  <li>
	    <filter>
		  <thingDefs>
		    <li>Milk</li>
		  </thingDefs>
		</filter>
		<count>35</count>
	  </li>
    </ingredients>
	<!-- How chocolate is made from RawCocoa -->
	  <recipeUsers>
	    <li>FueledStove</li>
		<li>ElectricStove</li>
	  </recipeUsers>
	  <workSpeedStat>CookSpeed</workSpeedStat>
	  <workSkill>Cooking</workSkill>
	  <skillRequirements>
	    <Cooking>5</Cooking>
	  </skillRequirements>
	
    <fixedIngredientFilter>
      <thingDefs>
	    <li>RawCocoa</li>
		<li>Milk</li>
	  </thingDefs>
    </fixedIngredientFilter>
    <!-- Marking what the recipe produces -->
    <products>
      <WhiteChocolate>40</WhiteChocolate>
    </products>
  </RecipeDef>
  
  
</Defs>