<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--基础定义-->
  <ThingDef ParentName="BuildingBase" Name="TKYYS_SiegeTank_Base" Abstract="True">
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>TKYYS_SiegeTank_Base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3, 3)</drawSize>
      <drawOffset>(0,0,0)</drawOffset>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(1.5,0.35,1.4)</volume>
        <offset>(0,0,-0.05)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <size>(3,3)</size>
    <statBases>
      <MaxHitPoints>14466</MaxHitPoints>
      <Flammability>0</Flammability>
      <WorkToBuild>1000</WorkToBuild>
      <Mass>100</Mass>
      <Beauty>30</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.5</fillPercent>
    <hasTooltip>true</hasTooltip>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>0</constructionSkillPrerequisite>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretTopDrawSize>3</turretTopDrawSize>
      <turretTopOffset>(-0.0, 0.3)</turretTopOffset>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <designationHotKey>Misc3</designationHotKey>
    <uiIconScale>0.95</uiIconScale>
    <drawerType>MapMeshAndRealTime</drawerType>
  </ThingDef>
  <!--建筑定义-->
  <ThingDef ParentName="TKYYS_SiegeTank_Base">
    <defName>TKYYS_SiegeTank_Building</defName>
    <label>攻城坦克</label>
    <description>所及之处，唯有残骸。</description>
    <uiIconPath>TKYYS_SiegeTank_Icon</uiIconPath>
    <statBases>
      <MaxHitPoints>14466</MaxHitPoints>
      <ShootingAccuracyTurret>1</ShootingAccuracyTurret>
    </statBases>
    <constructionSkillPrerequisite>0</constructionSkillPrerequisite>
    <costList>
      <Steel>600</Steel>
      <Plasteel>30</Plasteel>
      <ComponentIndustrial>30</ComponentIndustrial>
      <Silver>20</Silver>
    </costList>
    <comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
    <building>
      <turretGunDef>TKYYS_SiegeTank_Gun</turretGunDef>
      <turretBurstCooldownTime>2</turretBurstCooldownTime>
    </building>
    <hasInteractionCell>True</hasInteractionCell>
  </ThingDef>
  <!--枪管-->
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>TKYYS_SiegeTank_Gun</defName>
    <label>攻城坦克</label>
    <description>所及之处，唯有残骸。</description>
    <graphicData>
      <texPath>TKYYS_SiegeTank_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <statBases>
      <AccuracyTouch>2</AccuracyTouch>
      <AccuracyShort>2</AccuracyShort>
      <AccuracyMedium>2</AccuracyMedium>
      <AccuracyLong>2</AccuracyLong>
      <RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>600</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <defaultProjectile>TKYYS_SiegeTank_Bullet</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>49</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>TKYYS_Shot_SiegeTank</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>18</muzzleFlashScale>
        <consumeFuelPerShot>0</consumeFuelPerShot>
        <forcedMissRadius>0.1</forcedMissRadius>
        <requireLineOfSight>false</requireLineOfSight>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
    <tickerType>Normal</tickerType>
    <hasInteractionCell>True</hasInteractionCell>
  </ThingDef>
  <!--投射物-->
  <ThingDef ParentName="BaseBullet">
    <defName>TKYYS_SiegeTank_Bullet</defName>
    <label>攻城坦克炮弹</label>
    <graphicData>
      <texPath>TKYYS_SiegeTank_Bullet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Flame</damageDef>
      <damageAmountBase>100</damageAmountBase>
      <speed>200</speed>
      <armorPenetrationBase>2</armorPenetrationBase>
      <extraDamages>
        <li>
          <def>Stun</def>
          <amount>50</amount>
        </li>
      </extraDamages>
      <arcHeightFactor>4</arcHeightFactor>
      <shadowSize>0.4</shadowSize>
      <explosionRadius>3</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
