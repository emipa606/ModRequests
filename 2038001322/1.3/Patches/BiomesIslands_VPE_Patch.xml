<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
			<li Class="PatchOperationAdd"> 
				<xpath>/Defs/BiomeDef[defName = "BiomesIslands_Atoll"]/wildPlants</xpath>
				<value>
					<VCE_Opuntia>0.005</VCE_Opuntia>
					<VCE_PeachTree>0.005</VCE_PeachTree>
				</value>
			</li>
			<li Class="PatchOperationAdd"> 
				<xpath>/Defs/BiomeDef[defName = "BiomesIslands_BorealIsland"]/wildPlants</xpath>
				<value>
