<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ================== Insects ================== -->

  <ThingDef ParentName="BaseInsect">
    <defName>BiomesIslands_Megamantis</defName>
    <label>megamantis</label>
    <description>A large, genetically-engineered mantis. Probably escaped from some lab run by a rogue scientist, it has become an apex predator on the tropical islands where it makes its home.</description>
    <statBases>
      <MoveSpeed>3.75</MoveSpeed>
      <ArmorRating_Blunt>0.18</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.72</ArmorRating_Sharp>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <MarketValue>100</MarketValue>
      <LeatherAmount>20</LeatherAmount>
    </statBases>
    <uiIconScale>2</uiIconScale>
    <tools>
      <li>
        <label>mandibles</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
        <chanceFactor>0.6</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>25</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>left scythe</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftScythe</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>25</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right scythe</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightScythe</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>25</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.1</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>BiomesIslands_EggMegamantisFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>20</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>
          <min>1</min>
          <max>5</max>
        </eggCountRange>
      </li>
    </comps>
    <race>
      <body>MantisLike</body>
      <predator>true</predator>
      <herdAnimal>false</herdAnimal>
      <maxPreyBodySize>2.3</maxPreyBodySize>
      <petness>0.5</petness>
      <baseBodySize>1.0</baseBodySize>
      <baseHungerRate>0.25</baseHungerRate>
      <baseHealthScale>0.6</baseHealthScale>
      <useMeatFrom>Megaspider</useMeatFrom>
      <wildness>0.95</wildness>
      <manhunterOnTameFailChance>0.35</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.35</manhunterOnDamageChance>
	  <leatherDef>BiomesCore_GreenChitin</leatherDef>
      <lifeExpectancy>10</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>EusocialInsectLarva</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>EusocialInsectJuvenile</def>
          <minAge>0.03</minAge>
        </li>
        <li>
          <def>EusocialInsectAdult</def>
          <minAge>0.4</minAge>
          <soundWounded>Pawn_Megascarab_Wounded</soundWounded>
          <soundDeath>Pawn_Megascarab_Death</soundDeath>
          <soundCall>Pawn_Mantis_Call</soundCall>
          <soundAngry>Pawn_Megascarab_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalInsect</li>
    </tradeTags>
  </ThingDef>
  
