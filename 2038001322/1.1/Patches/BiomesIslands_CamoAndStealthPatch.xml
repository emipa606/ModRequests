<?xml version="1.0" encoding="utf-8" ?>

<!--
Arctic
Desert
Jungle
Stone
Urban
Woodland
-->

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Camouflage and Stealth</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_Atoll"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Jungle</CamoType>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_TropicalIsland"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Jungle</CamoType>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>


</Patch>

