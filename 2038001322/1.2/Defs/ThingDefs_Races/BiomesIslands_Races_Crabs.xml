  <ThingDef ParentName="BiomesCore_CrabThingBase">
    <defName>BiomesIslands_HermitCrab</defName>
    <label>hermit crab</label>
    <description>A crab species known for hiding inside seashells. Despite their name, they are highly social, living in colonies of hundreds of crabs. Their hard shells make them very tough for their size.</description>
    <statBases>
      <MoveSpeed>2.5</MoveSpeed>
      <SwimSpeed>4</SwimSpeed>
      <MarketValue>110</MarketValue>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
      <ComfyTemperatureMin>-8</ComfyTemperatureMin>
	  <ComfyTemperatureMax>55</ComfyTemperatureMax>
	  <PainShockThreshold>0.5</PainShockThreshold>
    </statBases>
    <race>
	  <herdAnimal>true</herdAnimal>
	  <herdMigrationAllowed>true</herdMigrationAllowed>
      <baseBodySize>0.15</baseBodySize>
	  <baseHealthScale>1</baseHealthScale>
	  <baseHungerRate>0.25</baseHungerRate>
      <lifeExpectancy>9</lifeExpectancy>
      <manhunterOnTameFailChance>0.05</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.01</manhunterOnDamageChance>
	  <wildness>0.10</wildness>
      <useMeatFrom>BiomesIslands_RimCrab</useMeatFrom>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>BiomesIslands_EggHermitCrabFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>2</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>
          <min>1</min>
          <max>3</max>
        </eggCountRange>
      </li>
    </comps>
    <tools>
		<li>
			<label>claw</label>
			<capacities>
				<li>Cut</li>
			</capacities>
			<power>8</power>
			<cooldownTime>2.2</cooldownTime>
			<linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
		</li>
		<li>
			<label>head</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>3</power>
			<cooldownTime>1.65</cooldownTime>
			<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
		</li>
	</tools>
  </ThingDef>

