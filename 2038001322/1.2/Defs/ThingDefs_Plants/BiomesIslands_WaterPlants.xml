 <!-- Special -->
 
<ThingDef ParentName="PlantBase">
	<defName>BiomesIslands_GlowPlankton</defName>
    <label>bioluminescent plankton</label>
    <thingClass>BiomesCore.DerivedClasses.BMT_Plant</thingClass>
    <description>A short lived plankton that emits a soft glow</description>
    <statBases>
		<MaxHitPoints>90</MaxHitPoints>
		<Nutrition>0.03</Nutrition>
		<Beauty>7</Beauty>
    </statBases>
    <pathCost>20</pathCost>
    <graphicData>
		<graphicClass>Graphic_Random</graphicClass>
		<texPath>BiomesIslands_Things/Plant/GlowPlankton</texPath>
		<!-- <shaderType>MoteGlow</shaderType> -->
		<shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <modExtensions>
        <li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
            <allowInFresh>false</allowInFresh>
            <allowInSalty>true</allowInSalty>
            <allowInShallow>true</allowInShallow>
            <allowInDeep>true</allowInDeep>
            <allowOnLand>false</allowOnLand>
			<needsRest>false</needsRest>
        </li>
    </modExtensions>
    <!-- <hideAtSnowDepth>0.5</hideAtSnowDepth> -->
    <plant>

		<fertilityMin>0.05</fertilityMin>
		<fertilitySensitivity>0.3</fertilitySensitivity>
		<growMinGlow>0</growMinGlow>
		<growOptimalGlow>0</growOptimalGlow>
		<growDays>0.5</growDays>
		<visualSizeRange>0.8~2.5</visualSizeRange> 
		<maxMeshCount>4</maxMeshCount>
		<lifespanDaysPerGrowDays>2.0</lifespanDaysPerGrowDays>
    </plant>
  </ThingDef>

