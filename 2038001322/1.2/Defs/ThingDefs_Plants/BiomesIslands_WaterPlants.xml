<Defs>

<!-- For fish to eat -->

<ThingDef ParentName="PlantBase">
	<defName>BiomesIslands_Kelp</defName>
    <label>kelp</label>
    <description>An aquatic plant</description>
    <statBases>
		<MaxHitPoints>90</MaxHitPoints>
		<Nutrition>0.2</Nutrition>
    </statBases>
    <pathCost>20</pathCost>
    <graphicData>
		<graphicClass>Graphic_Single</graphicClass>
		<texPath>BiomesIslands_Things/Plant/Kelp/Kelp</texPath>
    </graphicData>
    <modExtensions>
        <li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
            <allowInFresh>false</allowInFresh>
            <allowInSalty>true</allowInSalty>
            <allowInShallow>true</allowInShallow>
            <allowInDeep>true</allowInDeep>
            <allowOnLand>false</allowOnLand>
        </li>
    </modExtensions>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <plant>
		<fertilityMin>0.3</fertilityMin>
		<fertilitySensitivity>1</fertilitySensitivity>
		<growDays>3</growDays>
		<maxMeshCount>4</maxMeshCount>
		<visualSizeRange>1.2~1.5</visualSizeRange>
		<topWindExposure>0.2</topWindExposure>
		<wildClusterRadius>8</wildClusterRadius>
		<wildClusterWeight>50</wildClusterWeight>
		<wildOrder>1</wildOrder>
        <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
    </plant>
  </ThingDef>


