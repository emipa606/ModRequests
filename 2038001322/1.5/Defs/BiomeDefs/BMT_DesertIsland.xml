<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<BiomeDef Name="BiomesIslands_DesertIslandBase" Abstract="True">
		<defName>BiomesIslands_DesertIslandBase</defName>
		<label>desert island</label>
		<description>Scorched by the sun and stripped of most vegetation, these sandy stretches may seem barren. But with resilience, one can unearth hidden resources, making survival a true testament to adaptability.</description>
		<canAutoChoose>false</canAutoChoose>
		<allowRoads>false</allowRoads>
		<allowRivers>false</allowRivers>
		<animalDensity>2.4</animalDensity>
		<plantDensity>0.24</plantDensity>
		<settlementSelectionWeight>0.01</settlementSelectionWeight>
		<allowFarmingCamps>false</allowFarmingCamps>
		<campSelectionWeight>0.1</campSelectionWeight>
		<movementDifficulty>2</movementDifficulty>
		<texture>World/Biomes/Ocean</texture>
		<forageability>0.5</forageability>
		<foragedFood>RawBerries</foragedFood>
		<wildPlantRegrowDays>25</wildPlantRegrowDays>
		<soundsAmbient>
			<li>Ambient_NightInsects_Standard</li>
		</soundsAmbient>
		<diseaseMtbDays>65</diseaseMtbDays>
		<diseases>
			<li>
				<diseaseInc>Disease_Flu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_Plague</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_GutWorms</diseaseInc>
				<commonality>60</commonality>
			</li>
			<li>
				<diseaseInc>Disease_MuscleParasites</diseaseInc>
				<commonality>60</commonality>
			</li>
			<li>
				<diseaseInc>Disease_FibrousMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>

			<li>
				<diseaseInc>Disease_SensoryMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
			<li>
				<diseaseInc>Disease_AnimalFlu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_AnimalPlague</diseaseInc>
				<commonality>100</commonality>
			</li>
		</diseases>
		<terrainsByFertility>
			<li>
				<terrain>WaterOceanDeep</terrain>
				<min>-999</min>
				<max>0.40</max>
			</li>
			<li>
				<terrain>WaterOceanShallow</terrain>
				<min>0.40</min>
				<max>1.0</max>
			</li>
			<li>
				<terrain>Sand</terrain>
				<min>1.0</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.04</perlinFrequency>
				<minFertility>3.0</minFertility>
				<minSize>8</minSize>
				<thresholds>
					<li>
						<terrain>Gravel</terrain>
						<min>0.44</min>
						<max>0.83</max>
					</li>
				</thresholds>
			</li>
			<li>
				<perlinFrequency>0.05</perlinFrequency>
				<minFertility>3.0</minFertility>
				<minSize>20</minSize>
				<thresholds>
					<li>
						<terrain>Soil</terrain>
						<min>0.2</min>
						<max>999</max>
					</li>
				</thresholds>
			</li>

		</terrainPatchMakers>
		<baseWeatherCommonalities>
			<Clear>18</Clear>
			<Fog>1</Fog>
			<Rain>2</Rain>
			<DryThunderstorm>1</DryThunderstorm>
			<RainyThunderstorm>1</RainyThunderstorm>
			<FoggyRain>0.5</FoggyRain>
			<SnowGentle>4</SnowGentle>
			<SnowHard>4</SnowHard>
		</baseWeatherCommonalities>
		<wildPlants>
			<!-- land plants -->
			<Plant_Grass>7.0</Plant_Grass>
			<Plant_Dandelion>0.8</Plant_Dandelion>
			<Plant_Bush>0.7</Plant_Bush>
			<Plant_PincushionCactus>0.6</Plant_PincushionCactus>
			<Plant_Agave>0.2</Plant_Agave>
			<Plant_SaguaroCactus>0.26</Plant_SaguaroCactus>
			<Plant_TreeDrago>0.20</Plant_TreeDrago>
			<Plant_Berry>0.10</Plant_Berry>
			<BiomesIslands_CoconutPalm>0.03</BiomesIslands_CoconutPalm>
			<!-- water plants -->
			<BiomesIslands_Kelp>1.5</BiomesIslands_Kelp>
			<BiomesIslands_SeaGrass>4.0</BiomesIslands_SeaGrass>
			<BiomesIslands_Seaweed>4.0</BiomesIslands_Seaweed>
			<BiomesIslands_GreenAlgae>0.3</BiomesIslands_GreenAlgae>
			<BiomesIslands_Murkweed>0.1</BiomesIslands_Murkweed>
			<BiomesIslands_WhiteAlgae>0.8</BiomesIslands_WhiteAlgae>
			<BiomesIslands_Sargassum>1.5</BiomesIslands_Sargassum>
		</wildPlants>
		<wildAnimals>
			<!-- land grazers -->
			<Donkey>0.1</Donkey>
			<GuineaPig>0.017</GuineaPig>
			<Horse>0.1</Horse>
			<Bison>0.1</Bison>
			<Rat>1.3</Rat>
			<Hare>1.3</Hare>
			<Iguana>0.7</Iguana>
			<Gazelle>0.7</Gazelle>
			<Ostrich>0.7</Ostrich>
			<Dromedary>0.7</Dromedary>
			<Boomrat>0.5</Boomrat>
			<Elephant>0.4</Elephant>
			<Rhinoceros>0.5</Rhinoceros>
			<Boomalope>0.5</Boomalope>
			<Megasloth>0.1</Megasloth>
			<BiomesIslands_ClutterCrab>0.4</BiomesIslands_ClutterCrab>
			<BiomesIslands_Seagull>1.3</BiomesIslands_Seagull>
			<BiomesIslands_FiddlerCrab>0.8</BiomesIslands_FiddlerCrab>
			<BiomesIslands_HermitCrab>0.2</BiomesIslands_HermitCrab>
			<BiomesIslands_SeaTurtle>0.5</BiomesIslands_SeaTurtle>
			<BiomesIslands_MarineIguana>0.7</BiomesIslands_MarineIguana>
			<BiomesIslands_LeatherbackTurtle>0.3</BiomesIslands_LeatherbackTurtle>
			<BiomesIslands_PhoebaniaRat>0.1</BiomesIslands_PhoebaniaRat>
			<BiomesIslands_GalapagosTortoise>0.5</BiomesIslands_GalapagosTortoise>
			<BMT_SeaOtter>0.01</BMT_SeaOtter>

			<!-- land predators -->
			<Cougar>0.1</Cougar>
			<Fox_Fennec>0.15</Fox_Fennec>
			<BMT_KomodoDragon>0.05</BMT_KomodoDragon>

			<!-- Water animals have ~50% higher stats relative to other islands to keep water pops up -->
			<!-- aquatic grazers -->
			<BMT_Sunfish>0.1</BMT_Sunfish>
			<BiomesIslands_Sardine>1.5</BiomesIslands_Sardine>
			<BMT_SunfinAngelfish>1.0</BMT_SunfinAngelfish>
			<BMT_OrchidBasslet>1.0</BMT_OrchidBasslet>
			<BiomesIslands_LimepeelAngelfish>1.5</BiomesIslands_LimepeelAngelfish>
			<BMT_GreenEel>1.0</BMT_GreenEel>
			<BiomesIslands_Trout>0.15</BiomesIslands_Trout>
			<BiomesIslands_BoomWhale>1.0</BiomesIslands_BoomWhale>
			<BMT_Parrotfish>1.5</BMT_Parrotfish>
			<BiomesIslands_MantaRay>0.05</BiomesIslands_MantaRay>

			<!-- aquatic predators -->
			<BMT_Dolphin>0.3</BMT_Dolphin>
			<BMT_Swordfish>0.09</BMT_Swordfish>
			<BiomesIslands_RedSnapper>0.3</BiomesIslands_RedSnapper>
			<BiomesIslands_Tuna>0.45</BiomesIslands_Tuna>
			<BiomesIslands_Hammerhead>0.2</BiomesIslands_Hammerhead>
			<BiomesIslands_WhiteShark>0.158</BiomesIslands_WhiteShark>
		</wildAnimals>
		<allowedPackAnimals>
			<li>Muffalo</li>
			<li>Dromedary</li>
			<li>Elephant</li>
			<li>Alpaca</li>
		</allowedPackAnimals>
		<pollutionWildAnimals MayRequire="Ludeon.RimWorld.Biotech">
			<Boomalope>0.05</Boomalope>
			<Boomrat>0.1</Boomrat>
			<Iguana>1</Iguana>
			<Megascarab>0.8</Megascarab>
			<Rat>0.2</Rat>
			<Toxalope MayRequire="Ludeon.RimWorld.Biotech">0.05</Toxalope>
			<WasteRat MayRequire="Ludeon.RimWorld.Biotech">0.5</WasteRat>
		</pollutionWildAnimals>
	</BiomeDef>

	<BiomeDef ParentName="BiomesIslands_DesertIslandBase">
		<defName>BiomesIslands_DesertIsland</defName>
		<label>desert island</label>
		<workerClass>BiomesIslands.BiomeWorkers.BiomeWorker_DesertIsland</workerClass>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.BiomesMap">
				<isIsland>true</isIsland>
				<hasScatterables>true</hasScatterables>
				<allowBeach>false</allowBeach>
				<islandShapes>
					<li>Smooth</li>
					<li>Rough</li>
					<li>Crescent</li>
					<li>Pair</li>
				</islandShapes>
				<useOceanMaterial>true</useOceanMaterial>
				<overlayTexturePath>BiomesIslands_World/MapGraphics/DesertIsland</overlayTexturePath>
			</li>
			<li Class="GeologicalLandforms.BiomeProperties" MayRequire="m00nl1ght.GeologicalLandforms">
				<isWaterCovered>true</isWaterCovered>
				<allowLandforms>false</allowLandforms>
				<allowBiomeTransitions>false</allowBiomeTransitions>
			</li>
		</modExtensions>
	</BiomeDef>

	<BiomeDef ParentName="BiomesIslands_DesertIslandBase">
		<defName>BiomesIslands_DesertArchipelago</defName>
		<label>desert Archipelago</label>
		<workerClass>BiomesIslands.BiomeWorkers.BiomeWorker_DesertArchipelago</workerClass>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.BiomesMap">
				<isIsland>true</isIsland>
				<hasScatterables>true</hasScatterables>
				<allowBeach>false</allowBeach>
				<islandShapes>
					<li>Cluster</li>
				</islandShapes>
				<useOceanMaterial>true</useOceanMaterial>
				<overlayTexturePath>BiomesIslands_World/MapGraphics/DesertArchipelago</overlayTexturePath>
			</li>
		</modExtensions>
	</BiomeDef>
</Defs>
