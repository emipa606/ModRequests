<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>BMT_Apparel_Flippers</defName>
		<label>flippers</label>
		<description>Flippers to swim faster.\n\nThey are worth 500 rupees.</description>
		<graphicData>
			<texPath>BiomesIslands_Things/Item/Apparel/Flippers/Flippers</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>0.1</generateCommonality>
		<costList>
			<Plasteel>1</Plasteel>
		</costList>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.5</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>Apparel</li>
			<li MayRequire="VanillaExpanded.VARME">VAE_BootsAndGloves</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Feet</li>
			</bodyPartGroups>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<layers>
				<li>Middle</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel"/>
		<modExtensions>
			<li Class="PathfindingFramework.MovementExtension">
				<movementDef>PF_Movement_Amphibious</movementDef>
			</li>
		</modExtensions>

	</ThingDef>
</Defs>
