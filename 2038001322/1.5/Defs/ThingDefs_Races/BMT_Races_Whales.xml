			<MoveSpeed>0.9</MoveSpeed>
		</statFactors>
	</LifeStageDef>

	<LifeStageDef>
		<defName>BiomesIslands_WhaleAdult</defName>
		<label>adult</label>
		<visible>false</visible>
		<reproductive>true</reproductive>
		<milkable>true</milkable>
		<shearable>true</shearable>
	</LifeStageDef>

	<ThingDef ParentName="BiomesCore_SaltWaterAnimal" ADogSaidBody="Tail">
		<defName>BiomesIslands_Whale</defName>
		<label>whale</label>
		<description>Whales live in the seas, they look like large fishes, but they are actually mammals. They breathe air before diving and can endure hours without returning to the surface, they produce milk for the baby whales. They can be found usually in groups.</description>
		<statBases>
			<MoveSpeed>7</MoveSpeed>
			<ComfyTemperatureMin>-65</ComfyTemperatureMin>
			<ComfyTemperatureMax>45</ComfyTemperatureMax>
			<MarketValue>1800</MarketValue>
		</statBases>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>30</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.6</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>28</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>30</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.3</chanceFactor>
			</li>
		</tools>
		<race>
			<herdAnimal>true</herdAnimal>
			<predator>true</predator>
			<body>Biomes_WhaleBody</body>
			<leatherDef>BiomesIslands_Leather_Whaleskin</leatherDef>
			<baseHungerRate>2.7</baseHungerRate>
			<baseBodySize>4</baseBodySize>
			<baseHealthScale>5.0</baseHealthScale>
			<foodType>OmnivoreRoughAnimal</foodType>
			<gestationPeriodDays>25</gestationPeriodDays>
			<packAnimal>false</packAnimal>
			<wildness>0.95</wildness>
			<nuzzleMtbHours>275</nuzzleMtbHours>
			<petness>0.01</petness>
			<lifeExpectancy>65</lifeExpectancy>
			<trainability>Advanced</trainability>
			<manhunterOnTameFailChance>0.6</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.7</manhunterOnDamageChance>
			<meatLabel>blubber</meatLabel>
			<meatColor>(255,210,210)</meatColor>
			<lifeStageAges>
				<li>
					<def>BiomesIslands_WhaleBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>BiomesIslands_WhaleJuvenile</def>
					<minAge>1.8</minAge>
				</li>
				<li>
					<def>BiomesIslands_WhaleAdult</def>
					<minAge>3.5</minAge>

					<soundCall>BiomesIslands_Whale_Call</soundCall>
					<soundAngry>BiomesIslands_Whale_Angry</soundAngry>

				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
		<modExtensions>
			<li Class="PathfindingFramework.MovementExtension">
				<movementDef>PF_Movement_Aquatic</movementDef>
			</li>
		</modExtensions>
	</ThingDef>

