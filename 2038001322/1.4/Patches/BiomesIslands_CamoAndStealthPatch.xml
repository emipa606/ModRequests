<?xml version="1.0" encoding="utf-8" ?>

<!--
Arctic
Desert
Jungle
Stone
Urban
Woodland
-->

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Camouflage and Stealth</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_Atoll"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Jungle</CamoType>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_TropicalIsland"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Jungle</CamoType>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_TropicalArchipelago"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Jungle</CamoType>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_DesertIsland"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Desert</CamoType>
						</li>
					</value>
				</li><li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_DesertArchipelago"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Desert</CamoType>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_BorealIsland"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Woodland</CamoType>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_BorealArchipelago"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Woodland</CamoType>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_TundraIsland"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Arctic</CamoType>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_TundraArchipelago"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Arctic</CamoType>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_TemperateIsland"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Woodland</CamoType>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_TemperateArchipelago"]</xpath>
					<value>
						<li Class="CompCamo.CompCamoDefs">
						<CamoType>Woodland</CamoType>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>


</Patch>

