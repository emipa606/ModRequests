            <li Class="PatchOperationAdd">
                <xpath>/Defs/TerrainDef[defName = "Marsh"]</xpath>
                <value>
                    <affordances />
                </value>
            </li>
        </operations>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/TerrainDef[defName = "Marsh"]/affordances</xpath>
		<value>
			<li>BiomesCore_FreshWater_Bridgeable</li>
		</value>
	</Operation>

