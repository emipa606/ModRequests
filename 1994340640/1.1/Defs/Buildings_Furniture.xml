<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="WallBuildingBase">
        <defName>WallscreenTelevision</defName>
        <thingClass>WallStuff.WallThingBase</thingClass>
        <label>wallscreen television</label>
        <description>A huge, high-tech television. Gigantic, hyper-vibrant images almost leap out of the screen. Very entertaining. Picks up transmissions from ancient satellites and ubiquitous data cards. Wall Mounted, nice.</description>
        <graphicData>
            <texPath>WallScreen/WallScreen</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(2,1)</drawSize>
        </graphicData>
        <uiIconPath>WallScreen/WallScreen_UI</uiIconPath>
        <altitudeLayer>PawnUnused</altitudeLayer>
        <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
        <rotatable>true</rotatable>
        <minifiedDef>MinifiedThing</minifiedDef>
        <socialPropernessMatters>true</socialPropernessMatters>
        <fillPercent>0.35</fillPercent>
        <defaultPlacingRot>South</defaultPlacingRot>
        <thingCategories>
            <li>BuildingsJoy</li>
        </thingCategories>
        <costList>
            <Steel>140</Steel>
            <ComponentIndustrial>16</ComponentIndustrial>
        </costList>
        <statBases>
            <WorkToBuild>45000</WorkToBuild>
            <MaxHitPoints>80</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Beauty>8</Beauty>
            <Mass>8</Mass>
            <JoyGainFactor>1.4</JoyGainFactor>
        </statBases>
        <size>(2,1)</size>
        <building>
            <isEdifice>false</isEdifice>
            <joyKind>Television</joyKind>
            <spawnedConceptLearnOpportunity>TVForSickPeople</spawnedConceptLearnOpportunity>
            <boughtConceptLearnOpportunity>TVForSickPeople</boughtConceptLearnOpportunity>
            <watchBuildingStandDistanceRange>
                <min>1</min>
                <max>5</max>
            </watchBuildingStandDistanceRange>
            <watchBuildingStandRectWidth>6</watchBuildingStandRectWidth>
        </building>
        <placeWorkers>
            <li>WallStuff.PlaceWorker_WallMountedWatchArea</li>
            <li>WallStuff.PlaceWorker_WallObject</li>
            <li>WallStuff.PlaceWorker_WallChecker</li>
        </placeWorkers>
        <designationCategory>Joy</designationCategory>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>350</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable"/>
        </comps>
        <clearBuildingArea>false</clearBuildingArea>
        <tradeTags>
            <li>Television</li>
        </tradeTags>
        <researchPrerequisites>
            <li>WallStuff</li>
        </researchPrerequisites>
    </ThingDef>

