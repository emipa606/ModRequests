<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>*/VanillaPlantsExpanded.TillableTerrainDef[defName="VCE_AcceptedTillableTerrains"]/terrains</xpath>
				<value>
					<li>SoilRich</li>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/TerrainDef[defName="VCE_TilledSoil"]/description</xpath>
				<value>
					<description>Tillage is the agricultural preparation of soil by mechanical agitation of various types, increasing terrain fertility. When a plant is harvested on a plowed soil, the floor becomes soil again and needs to be plowed again manually.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/TerrainDef[defName="SoilRich"]/fertility</xpath>
				<value>
					<fertility>1.2</fertility>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>