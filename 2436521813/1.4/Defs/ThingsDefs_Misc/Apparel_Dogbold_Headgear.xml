<ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_DogboldWarMask</defName>
    <label>Dogbold war mask</label>
    <description>A metal mask worn into battle by canine kobolds. Fairly protective against sharp weapons.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Dogbolds/Apparel/DogboldWarMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
