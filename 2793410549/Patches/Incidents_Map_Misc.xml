<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationAdd">
    <!-- Ambrosia Sprout -->
    <xpath>/Defs/IncidentDef[defName="AmbrosiaSprout"]/allowedBiomes</xpath>
    <value>
      <li>WinterTaiga</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <!-- Herd Migration -->
    <xpath>Defs/IncidentDef[defName="HerdMigration"]/allowedBiomes</xpath>
    <value>
      <li>WinterTaiga</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <!-- Alphabeavers -->
    <xpath>Defs/IncidentDef[defName="Alphabeavers"]/allowedBiomes</xpath>
    <value>
      <li>WinterTaiga</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationFindMod">
    <!-- ReGrowth - Temperate Forest -->
    <mods>
      <li>ReGrowth - Temperate Forest Expansion</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/IncidentDef[defName="RG-TF_AlastairusSprout"]/allowedBiomes</xpath>
      <value>
        <li>WinterTaiga</li>
      </value>
    </match>
  </Operation>
</Patch>