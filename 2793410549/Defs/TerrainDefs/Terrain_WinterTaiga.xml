<?xml version="1.0" encoding="utf-8" ?>
<Defs>



 

  <!-- Cold Soil -->

  <TerrainDef ParentName="NaturalTerrainBase">
    <defName>ColdSoil</defName>
    <label>cold soil</label>
    <texturePath>Terrain/Surfaces/ColdySoil</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>340</renderPrecedence>
    <pathCost>2</pathCost>
    <statBases>
      <Beauty>-3</Beauty>
      <BeautyOutdoors>0</BeautyOutdoors>
      <Cleanliness>-1</Cleanliness>
    </statBases>
    <scatterType>Rocky</scatterType>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
    <generatedFilth>Filth_Dirt</generatedFilth>
    <fertility>0.70</fertility>
    <takeFootprints>True</takeFootprints>
    <tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
    <tags>
      <li>Soil</li>
    </tags>
  </TerrainDef>
  
  <TerrainDef ParentName="NaturalTerrainBase">
    <defName>WinterSnow</defName>
    <label>Snow</label>
    <texturePath>Terrain/Surfaces/WinterSnow</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>350</renderPrecedence>
    <pathCost>8</pathCost>
    <statBases>
      <Beauty>-3</Beauty>
      <BeautyOutdoors>0</BeautyOutdoors>
    </statBases>
    <scatterType>SoftGray</scatterType>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>Diggable</li>
    </affordances>
    <generatedFilth>Filth_Dirt</generatedFilth>
    <fertility>0.48</fertility>
    <takeFootprints>True</takeFootprints>
  </TerrainDef>

</Defs>
