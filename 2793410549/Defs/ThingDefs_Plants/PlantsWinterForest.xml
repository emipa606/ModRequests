   <ThingDef ParentName="PlantBase">
    <defName>Plant_ColdBrambles</defName>
	<thingClass>ExpandablePlants.Plant</thingClass>
    <label>Cold brambles</label>
    <description>Tangled, thorny, woody shoots covered with leaves. Brambles grow in clusters, and slow down anyone moving over them.</description>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Nutrition>0.50</Nutrition>
    </statBases>
    <pathCost>14</pathCost>
    <graphicData>
      <texPath>Plants/ColdBramble</texPath>
      <drawSize>1.7</drawSize>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible />
	<comps>
		<li Class="ExpandablePlants.CompProperties_Plant">
			<minGrowthTemperature>-200</minGrowthTemperature>
		</li>
	</comps>
    <plant>
	  <fertilityMin>0.52</fertilityMin>
      <growDays>3</growDays>
      <harvestWork>60</harvestWork>
      <maxMeshCount>4</maxMeshCount>
      <leaflessGraphicPath>Plants/ColdBramble_Leafless</leaflessGraphicPath>
      <visualSizeRange>0.7~0.85</visualSizeRange>
      <topWindExposure>0.15</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>200</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
    </plant>
  </ThingDef>

</Defs>
