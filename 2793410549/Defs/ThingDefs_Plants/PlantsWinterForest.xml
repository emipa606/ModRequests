      <texPath>Plants/SnowBush</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>1.15</drawSize>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
      </shadowData>
    </graphicData>
    <uiIconScale>0.85</uiIconScale>
    <plant>
	  <fertilityMin>0.48</fertilityMin>
      <growDays>3</growDays>
    </plant>
