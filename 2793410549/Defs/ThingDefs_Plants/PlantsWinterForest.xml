    </graphicData>
    <statBases>
      <Beauty>8</Beauty>
      <BeautyOutdoors>8</BeautyOutdoors>
    </statBases>
    <ingestible />
	<comps>
		<li Class="ExpandablePlants.CompProperties_Plant">
			<minGrowthTemperature>-200</minGrowthTemperature>
		</li>
	</comps>
    <plant>
      <leaflessGraphicPath>Plants/ColdPine_Leafless</leaflessGraphicPath>
