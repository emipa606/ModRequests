<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="TreeBase">
    <defName>Plant_SnowPine</defName>
	<thingClass>ExpandablePlants.Plant</thingClass>
    <label>Snowy pine tree</label>
    <description>A large conifer covered with prickly pine cones, and snow. It grows in a distinctive conical shape.</description>
    <graphicData>
      <texPath>Plants/SnowTree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
        <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
        </shadowData>
    </graphicData>
    <statBases>
      <Beauty>8</Beauty>
      <BeautyOutdoors>8</BeautyOutdoors>
    </statBases>
    <ingestible />
	<comps>
		<li Class="ExpandablePlants.CompProperties_Plant">
			<minGrowthTemperature>-300</minGrowthTemperature>
			<restBegins>0.25</restBegins>
			<restEnds>0.25</restEnds>
		</li>
	</comps>
    <plant>
	  <fertilityMin>0.48</fertilityMin>
      <growDays>15</growDays>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <visualSizeRange>1.0~2.5</visualSizeRange>
      <harvestWork>800</harvestWork>
      <harvestYield>27</harvestYield>
    </plant>
  </ThingDef>
  
   <ThingDef ParentName="PlantBase">
    <defName>Plant_ColdGrass</defName>
	<thingClass>ExpandablePlants.Plant</thingClass>
    <label>cold grass</label>
    <description>Wild cold grass. Grows anywhere there is a little light and minimally fertile ground.</description>
	<comps>
		<li Class="ExpandablePlants.CompProperties_Plant">
			<minGrowthTemperature>-200</minGrowthTemperature>
			<canDieOfHeat>false</canDieOfHeat>
		</li>
	</comps>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.1</Flammability>
      <Nutrition>0.45</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plants/ColdGrass</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible />
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <growDays>2.5</growDays>
      <leaflessGraphicPath>Plants/ColdGrass_Leafless</leaflessGraphicPath>
      <harvestWork>40</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.4~0.6</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef> 
  

