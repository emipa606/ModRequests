    </plant>
  </ThingDef>

  <ThingDef ParentName="BushBase">
    <defName>Plant_SnowBush</defName>
	<thingClass>ExpandablePlants.Plant</thingClass>
    <label>Snow bush</label>
    <description>A short snowy shrub. Occasionally complains about how it hates to get snowed on in the winter!</description>
	<comps>
		<li Class="ExpandablePlants.CompProperties_Plant">
			<minGrowthTemperature>-200</minGrowthTemperature>
		</li>
	</comps>
