<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Brick Wall -->
    <Operation Class="PatchOperationReplace">
        <xpath>*/*[defName="RGK_Wall"]/costList</xpath>
        <value>
            <costList>
				<N7_FiredBrick>5</N7_FiredBrick>
			</costList>
        </value>
    </Operation>
	
	<Operation Class="PatchOperationReplace">
        <xpath>*/*[defName="RGK_Wall"]/statBases</xpath>
        <value>
            <statBases>
				<Beauty>1</Beauty>
				<MaxHitPoints>525</MaxHitPoints>
				<WorkToBuild>600</WorkToBuild>
				<Flammability>0</Flammability>
			</statBases>
        </value>
    </Operation>
	
	<!-- Vent Brick Wall -->
    <Operation Class="PatchOperationReplace">
        <xpath>*/*[defName="RGK_VentWall"]/stuffCategories</xpath>
        <value>
			<costList>
				<N7_FiredBrick>5</N7_FiredBrick>
			</costList>
        </value>
    </Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>*/*[defName="RGK_VentWall"]/costStuffCount</xpath>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
        <xpath>*/*[defName="RGK_VentWall"]/statBases</xpath>
        <value>
            <statBases>
				<Beauty>3</Beauty>
				<MaxHitPoints>525</MaxHitPoints>
				<WorkToBuild>630</WorkToBuild>
				<Flammability>0</Flammability>
			</statBases>
        </value>
    </Operation>
	
	<!-- Window Brick Wall -->
    <Operation Class="PatchOperationReplace">
        <xpath>*/*[defName="RGK_WindowWall"]/stuffCategories</xpath>
        <value>
			<costList>
				<N7_FiredBrick>5</N7_FiredBrick>
			</costList>
        </value>
    </Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>*/*[defName="RGK_WindowWall"]/costStuffCount</xpath>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
        <xpath>*/*[defName="RGK_WindowWall"]/statBases</xpath>
        <value>
            <statBases>
				<Beauty>3</Beauty>
				<MaxHitPoints>525</MaxHitPoints>
				<WorkToBuild>630</WorkToBuild>
				<Flammability>0</Flammability>
			</statBases>
        </value>
    </Operation>
</Patch>
