<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BenchBase">
    <defName>CSL_Blackboard</defName>
    <devNote>TeachingLocation</devNote>
    <label>blackboard</label>
    <thingClass>CSL_Blackboard.Building_CSL_Blackboard</thingClass>
    <description>A blackboard for teaching.</description>
    <graphicData>
      <texPath>Things/Building/Production/Building_Blackboard</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
      <Steel>30</Steel>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2500</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-5</Cleanliness>
    </statBases>
    <size>(3,1)</size>
	<tickerType>Rare</tickerType>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>CSL_Blackboard.ITab_CSL_BlackboardBills</li>
	  <li>CSL_Blackboard.ITab_CSL_BlackboardSchedule</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
	  <li Class="CompProperties_Facility">
        <statOffsets>
          <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>11.0</maxDistance>
      </li>
    </comps>
    <designationHotKey></designationHotKey>
    <placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <techLevel>Medieval</techLevel>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>TeachingSpot</defName>
    <devNote>TeachingLocation</devNote>
    <label>teaching spot</label>
    <thingClass>CSL_Blackboard.Building_CSL_Blackboard</thingClass>
    <description>A spot for teaching. (less efficient than a blackboard)</description>
    <graphicData>
      <texPath>Things/Building/Production/TeachingSpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
      <WorkTableEfficiencyFactor>0.7</WorkTableEfficiencyFactor>
    </statBases>
    <interactionCellIcon>DiningChair</interactionCellIcon>
    <size>(1,1)</size>
	<tickerType>Rare</tickerType>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,+1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>CSL_Blackboard.ITab_CSL_BlackboardBills</li>
	  <li>CSL_Blackboard.ITab_CSL_BlackboardSchedule</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
	  <li Class="CompProperties_Facility">
        <statOffsets>
          <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>11.0</maxDistance>
      </li>
    </comps>
    <designationHotKey></designationHotKey>
    <placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
		<li>PlaceWorker_ReportWorkSpeedPenalties</li>
    </placeWorkers>
    <techLevel>Neolithic</techLevel>
  </ThingDef>

</Defs>