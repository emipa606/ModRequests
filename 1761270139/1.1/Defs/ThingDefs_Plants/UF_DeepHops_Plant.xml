<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="UF_UndergroundFoodPlantBase">
    <defName>UF_PlantDeepHops</defName>
    <label>Deep hops plant</label>
    <description>A unique strain of the hops plant that grows without light, but which grows at a slightly slower rate.\n\nThis plant only grows in dark environments and will die if exposed to light.</description>
    <statBases>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
		<texPath>Plants/DeepHops</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible />
    <plant>
		<harvestedThingDef>RawHops</harvestedThingDef>
		<harvestYield>8</harvestYield>
		<sowMinSkill>3</sowMinSkill>
		<dieIfLeafless>false</dieIfLeafless>
		<topWindExposure>0.0</topWindExposure>
		<growDays>6.5</growDays>
		<visualSizeRange>
			<min>0.3</min>
			<max>1.05</max>
		</visualSizeRange>
		<sowWork>200</sowWork>
		<sowResearchPrerequisites>
			<li>UF_XenograftingBasics</li>
		</sowResearchPrerequisites>
	</plant>
	<comps>
		<li Class="CompProperties_Glower">
			<glowRadius>1</glowRadius>
			<glowColor>(5, 90, 5)</glowColor>
		</li>
	</comps>
  </ThingDef>


</Defs>