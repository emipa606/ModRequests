<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="UF_UndergroundFoodPlantBase">
    <defName>UF_Neutrophyria</defName>
    <label>Neutrophyria</label>
    <description>The crystalline liquid that can be harvested from this xenofungus can be processed into neutroamine at a drug lab. The plant itself is utterly inedible.\n\nThis plant only grows in dark environments and will die if exposed to light.</description>
    <statBases>
      <Nutrition>0.01</Nutrition>
    </statBases>
    <graphicData>
		<texPath>Plants/Neutrophyria</texPath>
		<graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible>
        <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
		<harvestedThingDef>UF_RawNeutrophyria</harvestedThingDef>
		<harvestYield>5</harvestYield>
		<sowMinSkill>12</sowMinSkill>
		<growDays>16</growDays>
		<visualSizeRange>
			<min>0.3</min>
			<max>1.1</max>
		</visualSizeRange>
		<sowWork>800</sowWork>
		<harvestWork>800</harvestWork>
		<immatureGraphicPath>Plants/Neutrophyria/Immature</immatureGraphicPath>
		<sowResearchPrerequisites>
			<li>UF_XenofungusFabrication</li>
		</sowResearchPrerequisites>
	</plant>
	<comps>
		<li Class="CompProperties_Glower">
			<glowRadius>1</glowRadius>
			<glowColor>(54, 220, 243)</glowColor>
		</li>
	</comps>
  </ThingDef>


</Defs>