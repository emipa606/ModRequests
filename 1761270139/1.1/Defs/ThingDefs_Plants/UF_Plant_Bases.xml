<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="UF_UndergroundFoodPlantBase" Abstract="True">
		<category>Plant</category>
		<thingClass>Plant</thingClass>
		<altitudeLayer>LowPlant</altitudeLayer>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Flammability>0.8</Flammability>
			<Nutrition>0.2</Nutrition>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		<tickerType>Long</tickerType>
		<neverMultiSelect>True</neverMultiSelect>
		<drawerType>MapMeshOnly</drawerType>
		<pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
		<graphicData>
			<shaderType>CutoutPlant</shaderType>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible>
			<foodType>Plant</foodType>
			<preferability>RawBad</preferability>
		</ingestible>
		<plant>
			<neverBlightable>true</neverBlightable>
			<fertilityMin>0.2</fertilityMin>
			<fertilitySensitivity>0.4</fertilitySensitivity>
			<soundHarvesting>Harvest_Standard</soundHarvesting>
			<soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestWork>190</harvestWork>
			<sowWork>260</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>.02</growOptimalGlow>
			<visualSizeRange>
				<min>0.2</min>
				<max>0.5</max>
			</visualSizeRange>
			<cavePlant>true</cavePlant>
		</plant>
	</ThingDef>

	<ThingDef ParentName="UF_UndergroundFoodPlantBase" Name="UF_UndergroundFoodTreeBase" Abstract="True">
    <statBases>
		<MaxHitPoints>200</MaxHitPoints>
		<Flammability>0.8</Flammability>
		<Nutrition>0.2</Nutrition>
    </statBases>
    <altitudeLayer>Building</altitudeLayer>
    <selectable>true</selectable>
    <fillPercent>0.25</fillPercent>
    <graphicData>
		<shadowData>
			<volume>(0.2, 0.35, 0.13)</volume>
			<offset>(0,0,-0.42)</offset>
		</shadowData>
    </graphicData>
    <passability>PassThroughOnly</passability>
    <pathCost>130</pathCost>
    <blockWind>true</blockWind>
    <plant>
		<lifespanDaysPerGrowDays>9</lifespanDaysPerGrowDays>
		<fertilitySensitivity>0.5</fertilitySensitivity>
		<soundHarvesting>Harvest_Tree</soundHarvesting>
		<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
		<sowWork>4000</sowWork>
		<sowMinSkill>6</sowMinSkill>
		<!--mustBeWildToSow>true</mustBeWildToSow-->
		<harvestWork>800</harvestWork>
		<harvestMinGrowth>0.40</harvestMinGrowth>
		<harvestFailable>false</harvestFailable>
		<blockAdjacentSow>true</blockAdjacentSow>
		<sowTags>
			<li>Ground</li>
		</sowTags>
		<visualSizeRange>
			<min>1.0</min>
			<max>2.0</max>
		</visualSizeRange>
		<topWindExposure>0.25</topWindExposure>
		<wildClusterRadius>8</wildClusterRadius>
		<wildClusterWeight>24</wildClusterWeight>
		<wildOrder>3</wildOrder>
		<interferesWithRoof>false</interferesWithRoof>
    </plant>
  </ThingDef>
  
</Defs>