<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="UF_UndergroundFoodPlantBase">
		<defName>UF_PlantMelrotus</defName>
		<label>Melrotus</label>
		<description>The product of this xenofungus is not technically meat, but a more than acceptable replacement that can be used as meat.\n\nThis plant only grows in dark environments and will die if exposed to light.</description>
		<statBases>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Plants/Melrotus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<harvestedThingDef>UF_RawMelrotus</harvestedThingDef>
			<harvestYield>10</harvestYield>
			<sowMinSkill>6</sowMinSkill>
			<growDays>7</growDays>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.1</max>
			</visualSizeRange>
			<purpose>Food</purpose>
			<sowResearchPrerequisites>
				<li>UF_XenofungusCultivation</li>
			</sowResearchPrerequisites>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(255, 233, 33)</glowColor>
			</li>
		</comps>
	</ThingDef>

</Defs>