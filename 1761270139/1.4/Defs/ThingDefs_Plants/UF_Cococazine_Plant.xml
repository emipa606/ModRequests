<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="UF_UndergroundFoodPlantBase">
		<defName>UF_Cococazine</defName>
		<label>Cococazine</label>
		<description>This xenofungus can be ground into chocolate by a skilled chef.\n\nThis plant only grows in dark environments and will die if exposed to light.</description>
		<statBases>
			<Nutrition>0.25</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Plants/Cococazine</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<harvestedThingDef>UF_RawCococazine</harvestedThingDef>
			<harvestYield>10</harvestYield>
			<sowMinSkill>10</sowMinSkill>
			<growDays>20</growDays>
			<sowWork>1500</sowWork>
			<harvestWork>250</harvestWork>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.5</max>
			</visualSizeRange>
			<immatureGraphicPath>Plants/Cococazine/Immature</immatureGraphicPath>
			<sowResearchPrerequisites>
				<li>UF_AdvancedXenofungusCultivation</li>
			</sowResearchPrerequisites>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(179, 46, 226)</glowColor>
			</li>
		</comps>
	</ThingDef>

</Defs>