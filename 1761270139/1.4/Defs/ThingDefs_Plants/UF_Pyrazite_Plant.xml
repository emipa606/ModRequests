<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="UF_UndergroundFoodPlantBase">
    <defName>UF_PlantPyrazite</defName>
    <label>Pyrazite</label>
    <description>An odd xenofungus which produces highly exothermic crytals, which can be harvested and used as a basic heating mechanism. This plant is highly resistant to the cold and is unlikely to die if exposed to freezing temperatures.\n\nThis plant only grows in dark environments and will die if exposed to light.</description>
    <statBases>
      <Nutrition>0.01</Nutrition>
	  
    </statBases>
    <graphicData>
		<texPath>Plants/Pyrazite</texPath>
		<graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible>
        <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
		<harvestedThingDef>UF_RawPyrazite</harvestedThingDef>
		<dieIfLeafless>false</dieIfLeafless>
		<topWindExposure>0.0</topWindExposure>
		<harvestYield>10</harvestYield>
		<sowMinSkill>6</sowMinSkill>
		<growDays>4.5</growDays>
		<visualSizeRange>
			<min>0.3</min>
			<max>1.1</max>
		</visualSizeRange>
		<immatureGraphicPath>Plants/Pyrazite/Immature</immatureGraphicPath>
		<sowWork>400</sowWork>
		<harvestWork>800</harvestWork>
		<sowResearchPrerequisites>
				<li>UF_XenofungusCultivation</li>
			</sowResearchPrerequisites>
	</plant>
	<comps>
		<li Class="CompProperties_Glower">
			<glowRadius>1</glowRadius>
			<glowColor>(182, 120, 5)</glowColor>
		</li>
	</comps>
  </ThingDef>


</Defs>