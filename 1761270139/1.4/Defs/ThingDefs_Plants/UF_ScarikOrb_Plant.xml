<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="UF_UndergroundFoodPlantBase">
		<defName>UF_PlantScarikOrb</defName>
		<label>Scarik Orb</label>
		<description>A strange bulbous xenofungus which produces a small amount of milk, but is very time intensive to harvest.\n\nThis plant only grows in dark environments and will die if exposed to light.</description>
		<statBases>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Plants/ScarikOrb</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<harvestedThingDef>Milk</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<sowMinSkill>10</sowMinSkill>
			<growDays>11</growDays>
			<sowWork>400</sowWork>
			<harvestWork>1400</harvestWork>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.1</max>
			</visualSizeRange>
			<immatureGraphicPath>Plants/ScarikOrb/Immature</immatureGraphicPath>
			<purpose>Food</purpose>
			<sowResearchPrerequisites>
				<li>UF_AdvancedXenofungusCultivation</li>
			</sowResearchPrerequisites>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(255, 230, 92)</glowColor>
			</li>
		</comps>
	</ThingDef>

</Defs>