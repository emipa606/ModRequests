<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--       整活墨镜                                  -->
	<ThingDef ParentName="HatMakeableBase">
		<!--测试墨镜-->
		<defName>CeShiMoJing</defName>
		<label>测试墨镜</label>
		<description>王某导入的整活测试墨镜20220903</description>
		<techLevel>Neolithic</techLevel>
		<graphicData>
			<texPath>Apparel/MoJing</texPath>       <!--贴图路径 这里是对外展示的那个图 不是穿起来的效果-->  
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.9</drawSize>               
		</graphicData>
		<uiIconScale>1.15</uiIconScale>             <!--UI图标大小 感觉可能是下方显示大小 试一下-->
		<costList>
			<Steel>15</Steel>
		</costList>
		<statBases>
			<WorkToMake>1400</WorkToMake>
			<MaxHitPoints>80</MaxHitPoints>
			<Mass>0.08</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.37</ArmorRating_Sharp>
			<ArmorRating_Heat>0.14</ArmorRating_Heat>
			<StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<PainShockThreshold>0.25</PainShockThreshold>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/MoJing</wornGraphicPath>            <!--图路径 这里是穿起来的效果-->
			<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>      <!--加了这一行就不会头发消失了-->
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers>                   <!--制作台-->      
				<li>CraftingSpot</li>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>
	<!--       整活墨镜                                  -->


