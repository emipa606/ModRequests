    <!--__________ Headgear __________-->

    <!-- Great Khan Helmet -->

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>FCP_Apparel_Great_Khan_Helmet</defName>
        <label>great khan helmet</label>
        <description>A spiked, horned helmet made from animal hides like it is common among the
            Great Khans. While the thick leather does provide an adequate amount of head protection,
            it is mainly used to intimidate foes and show allegiance to the Khans.</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Apparel/Great_Khan_Armor/Great_Khan_Helmet/FCP_Great_Khan_Helmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.4</uiIconScale>
        <stuffCategories>
            <li>Metallic</li>
            <li>Leathery</li>
        </stuffCategories>
        <costStuffCount>40</costStuffCount>
        <statBases>
            <WorkToMake>3200</WorkToMake>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>2</Mass>
            <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <recipeMaker>
            <recipeUsers>
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
            </recipeUsers>
        </recipeMaker>
        <equippedStatOffsets>
            <PainShockThreshold>0.07</PainShockThreshold>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Great_Khan_Armor/Great_Khan_Helmet/FCP_Great_Khan_Helmet</wornGraphicPath>
