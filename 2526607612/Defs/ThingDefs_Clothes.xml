<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--__________ Apparel __________-->

    <!-- Great Khan Armored Leather -->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>FCP_Apparel_Great_Khan_Armored_Leather</defName>
        <label>great khan armored leathers</label>
        <description>: An outfit worn by the Great Khans. It’s composed of jeans, biker boots and a
            rough vest made of animal hides and reinforced with plates of scavenged metal riveted
            onto it. It offers good protection while still being relatively lightweight, as fits the
            hit-and-run tactics of the Great Khans. A testament to the Great Khan armorers’ ability
            to make the best out of their limited resources.</description>
        <graphicData>
            <texPath>Apparel/Great_Khan_Armor/Great_Khan_Armored_Leather/FCP_Great_Khan_Armored_Leather</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.85</drawSize>
        </graphicData>
        <costStuffCount>70</costStuffCount>
        <stuffCategories>
            <li>Leathery</li>
        </stuffCategories>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>160</MaxHitPoints>
            <WorkToMake>7200</WorkToMake>
            <Mass>1.3</Mass>
            <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
            <ArmorRating_Heat>0.15</ArmorRating_Heat>
            <StuffEffectMultiplierInsulation_Cold>2</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>5</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>0.95</EquipDelay>
        </statBases>
        <recipeMaker>
            <recipeUsers>
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
            </recipeUsers>
        </recipeMaker>
        <equippedStatOffsets>
            <PainShockThreshold>0.4</PainShockThreshold>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Great_Khan_Armor/Great_Khan_Armored_Leather/FCP_Great_Khan_Armored_Leather</wornGraphicPath>
            <layers>
                <li>Shell</li>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>IndustrialAdvanced</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

