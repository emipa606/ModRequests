	<allowMixingIngredients>true</allowMixingIngredients>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>	
    </recipeUsers>
	<ingredients>
	  <li>
		<filter>
		  <customSummary>protein</customSummary>
		  <categories>
			<li>MeatRaw</li>
			<li>AnimalProductRaw</li>
		  </categories>
		</filter>
		<count>36</count>
	  </li>
	  <li>
		<filter>
		  <categories>
			<li>PlantFoodRaw</li>
		  </categories>
		</filter>
		<count>36</count>
	  </li>
	</ingredients>
	<products>
	  <MealUSAMRE>4</MealUSAMRE>
	</products>
  <skillRequirements>
  <Crafting>2</Crafting>
  <Cooking>7</Cooking>
</skillRequirements>
<researchPrerequisite>PackagedSurvivalMeal</researchPrerequisite>
	</RecipeDef>




