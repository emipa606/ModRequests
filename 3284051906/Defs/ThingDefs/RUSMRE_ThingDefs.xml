<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Базовый ИРП -->
  <ThingDef ParentName="MealBase">
    <defName>MealRUSMRE</defName>
    <label>Russian military IRP</label>
    <description>IRP of the Army of the Russian Federation (Individual Ration Pack). A securely packaged individual soldier's ration. It has a variety of dishes and snacks on the menu, focusing on meat and grains. It is famous for its meat pate and multifunctional biscuits.</description>
    <graphicData>
      <graphicClass>Graphic_StackCount</graphicClass>
      <texPath>Things/Items/Rations/RUSMRE</texPath>
      <drawSize>(1.0, 1.0)</drawSize>
    </graphicData>
    <uiIconPath>Things/Items/Rations/RUSMRE</uiIconPath>
    <ingestible>
      <foodType>Meal</foodType>
      <preferability>MealFine</preferability>
      <tasteThought>AteMRE</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>EatingRUSMRE</ingestSound>
      <optimalityOffsetHumanlikes>0</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-10</optimalityOffsetFeedingAnimals>
    </ingestible>
    <comps>
      <li Class="CompProperties_Ingredients" />
    </comps>
    <tradeability>Sellable</tradeability>
    <allowedArchonexusCount>40</allowedArchonexusCount>
    <statBases>
      <DeteriorationRate>0.10</DeteriorationRate>
      <MarketValue>40</MarketValue>
      <Mass>0.2</Mass>
      <Nutrition>0.97</Nutrition>
    </statBases>
   
  </ThingDef>

