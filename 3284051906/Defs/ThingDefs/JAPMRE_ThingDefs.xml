<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Обычный японский ИРП -->
  <ThingDef ParentName="MealBase">
    <defName>MealJAPMRE</defName>
    <label>JSDF military ration pack</label>
    <description>Individual military ration of JSDF (Japanese Self Defense Forces). High-quality military meal pack designed to provide essential nutrition and energy to soldiers in the field. This ration pack includes a variety of delicious and culturally appropriate dishes, ensuring that troops stay well-fed and morale remains high during extended missions.</description>
    <graphicData>
      <graphicClass>Graphic_StackCount</graphicClass>
      <texPath>Things/Items/Rations/JAPMRE</texPath>
      <drawSize>(1.0, 1.0)</drawSize>
    </graphicData>
    <uiIconPath>Things/Items/Rations/JAPMRE</uiIconPath>
    <ingestible>
      <foodType>Meal</foodType>
      <preferability>MealFine</preferability>
      <tasteThought>AteMRE</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>EatingJAPMRE</ingestSound>
      <optimalityOffsetHumanlikes>0</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-10</optimalityOffsetFeedingAnimals>
    </ingestible>
    <comps>
      <li Class="CompProperties_Ingredients" />
    </comps>
    <tradeability>Sellable</tradeability>
    <allowedArchonexusCount>40</allowedArchonexusCount>
    <statBases>
      <DeteriorationRate>0.10</DeteriorationRate>
      <MarketValue>40</MarketValue>
      <Mass>0.2</Mass>
      <Nutrition>0.97</Nutrition>
    </statBases>
  </ThingDef>

