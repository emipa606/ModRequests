<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Обычный паёк -->
  <ThingDef ParentName="MealBase">
    <defName>MealTURMRE</defName>
    <label>Turkish "Ta!Da!" MRE</label>
    <description>Turkish civilian individual ration (Ta!Da!). Designed for use in long-term outdoor activity. It contains 3 ready-to-eat dishes and a variety of snacks and drinks. It is nutritious, practical and convenient</description>
    <graphicData>
      <graphicClass>Graphic_StackCount</graphicClass>
      <texPath>Things/Items/Rations/TURMRE</texPath>
      <drawSize>(1.0, 1.0)</drawSize>
    </graphicData>
    <uiIconPath>Things/Items/Rations/TURMRE</uiIconPath>
    <ingestible>
      <foodType>Meal</foodType>
      <preferability>MealFine</preferability>
      <tasteThought>AteMRE</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>EatingTURMRE</ingestSound>
      <optimalityOffsetHumanlikes>0</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-10</optimalityOffsetFeedingAnimals>
    </ingestible>
    <comps>
      <li Class="CompProperties_Ingredients" />
    </comps>
    <tradeability>Sellable</tradeability>
    <allowedArchonexusCount>40</allowedArchonexusCount>
    <statBases>
      <DeteriorationRate>0.10</DeteriorationRate>
      <MarketValue>40</MarketValue>
      <Mass>0.2</Mass>
      <Nutrition>0.97</Nutrition>
    </statBases>
  </ThingDef>

