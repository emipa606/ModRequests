<Defs>
  <ThingDef ParentName="MealBase">
    <defName>MealUSAMRE</defName>
    <label>US Military MRE</label>
    <description>A US military Meal, Ready-to-Eat. Professionally prepared and packaged in portions, individual food ration. Tasty and nutritious, ideal for long field operations or survival in harsh environment. It is also an excellent alternative to crayons</description>
    <graphicData>
    <graphicClass>Graphic_StackCount</graphicClass>
    <texPath>Things/Items/Rations/USAMRE</texPath> 
      <drawSize>(1.0, 1.0)</drawSize>
    </graphicData>
    <uiIconPath>Things/Items/Rations/USAMRE</uiIconPath>
    <ingestible>
      <foodType>Meal</foodType>
      <preferability>MealFine</preferability>
      <tasteThought>AteMRE</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>EatingMRE</ingestSound>
	  <optimalityOffsetHumanlikes>0</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-10</optimalityOffsetFeedingAnimals>
    </ingestible>
	<tradeability>Sellable</tradeability>
	<allowedArchonexusCount>40</allowedArchonexusCount>
    <statBases>
      <DeteriorationRate>0.10</DeteriorationRate>
      <MarketValue>40</MarketValue>
      <Mass>0.2</Mass>
      <Nutrition>0.97</Nutrition>
    </statBases>
  </ThingDef>




