<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Базовый немецкий EPA -->
  <ThingDef ParentName="MealBase">
    <defName>MealGERMRE</defName>
    <label>German military EPA</label>
    <description>Regular dry rations of the Bundeswehr military personnel, EPU (Einmannpackung). A securely packaged daily ration including a variety of dishes and snacks that are distributed on a menu of 3 types. It is famous for the quality of its products and taste criteria. Ideal for long journeys or operations. It is considered one of the best military individual rations of NATO.</description>
    <graphicData>
      <graphicClass>Graphic_StackCount</graphicClass>
      <texPath>Things/Items/Rations/GERMRE</texPath>
      <drawSize>(1.0, 1.0)</drawSize>
    </graphicData>
    <uiIconPath>Things/Items/Rations/GERMRE</uiIconPath>
    <ingestible>
      <foodType>Meal</foodType>
      <preferability>MealFine</preferability>
      <tasteThought>AteMRE</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>EatingGERMRE</ingestSound>
      <optimalityOffsetHumanlikes>0</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-10</optimalityOffsetFeedingAnimals>
    </ingestible>
    <comps>
      <li Class="CompProperties_Ingredients" />
    </comps>
    <tradeability>Sellable</tradeability>
    <allowedArchonexusCount>40</allowedArchonexusCount>
    <statBases>
      <DeteriorationRate>0.10</DeteriorationRate>
      <MarketValue>40</MarketValue>
      <Mass>0.2</Mass>
      <Nutrition>0.97</Nutrition>
    </statBases>
  </ThingDef>

