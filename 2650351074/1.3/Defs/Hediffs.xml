<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>RefreshingNap</defName>
    <label>well rested</label>
    <description>Energy boost from a refreshing nap.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <everCurableByItem>false</everCurableByItem>
    <isBad>false</isBad>
	<initialSeverity>1</initialSeverity>
	<maxSeverity>1</maxSeverity>
	<defaultLabelColor>(120,191,193)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>2500~7500</disappearsAfterTicks>
      </li>
    </comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>.10</offset>
					</li>
				</capMods>
				<!--<statOffsets>
					<WorkSpeedGlobal>.05</WorkSpeedGlobal>
				</statOffsets>-->
			</li>
    </stages>
  </HediffDef>

</Defs>
