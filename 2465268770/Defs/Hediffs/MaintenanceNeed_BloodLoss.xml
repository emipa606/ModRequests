<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <HediffDef>
    <defName>RobotBloodLoss</defName>
    <label>disrepair</label>
    <description>A lack of repair mechanites within this persona's body has resulted in its systems operating at a lower capacity while resources are diverted to create more.</description>
    <defaultLabelColor>(0,1,1)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
	<maxSeverity>1.001</maxSeverity>
	<minSeverity>0.001</minSeverity>
    <initialSeverity>0.002</initialSeverity>
    <stages>
      <li>
        <label>none</label>
        <becomeVisible>true</becomeVisible>
        <minSeverity>0</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.025</minSeverity>
        <label>minimal</label>
        <becomeVisible>true</becomeVisible>
        <hungerRateFactorOffset>10</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>minor</label>
        <hungerRateFactorOffset>15</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.90</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>moderate</label>
        <hungerRateFactorOffset>20</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.85</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>severe</label>
        <hungerRateFactorOffset>25</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.80</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>extreme</label>
        <hungerRateFactorOffset>30</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.75</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
</Defs>
