<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>WoodTwig</defName>
    <label>twig</label>
    <description>Small thin pieces of wood from small fibrous plants. Not at all useful for building anything but can be bundled into "logs" at a crafting spot for fuel.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Twigs</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>0.1</MarketValue>
      <MaxHitPoints>10</MaxHitPoints>
      <Mass>0.1</Mass> 
      <Flammability>1</Flammability>
      <DeteriorationRate>0.6</DeteriorationRate>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>10</minRewardCount>
    <isTechHediff>true</isTechHediff>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
  </ThingDef>
  
  <ThingDef ParentName="ResourceBase">
    <defName>WoodTwigBundle</defName>
    <label>twig bundle</label>
    <description>A bundle of twigs. Not at all useful for building anything, but does burn and can be refined into chemfuel.</description>
    <graphicData>
      <texPath>Things/Item/Resource/TwigBundle</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>0.4</MarketValue>
      <MaxHitPoints>20</MaxHitPoints>
      <Mass>0.4</Mass> 
      <Flammability>1</Flammability>
      <DeteriorationRate>0.6</DeteriorationRate>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>10</minRewardCount>
    <isTechHediff>true</isTechHediff>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
  </ThingDef>
  
</Defs>