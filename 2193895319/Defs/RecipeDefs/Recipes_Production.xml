<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>Make_ChemfuelFromTwigs</defName>
    <label>make chemfuel from twig bundles</label>
    <description>Make a batch of chemfuel by extracting and condensing wood gas from twig bundles. Less productive than logs.</description>
    <jobString>Refining chemfuel from twig bundles.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodTwigBundle</li>
          </thingDefs>
        </filter>
        <count>70</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodTwigBundle</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Chemfuel>25</Chemfuel>
    </products>
	<recipeUsers>
		<li>BiofuelRefinery</li>
	</recipeUsers>
  </RecipeDef>
  
   <RecipeDef>
    <defName>Make_WoodTwigBundle</defName>
    <label>Make twig bundle</label>
    <description>Make a twig bundle.</description>
    <jobString>Making a twig bundle.</jobString>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>20</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodTwig</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodTwig</li> 
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <WoodTwigBundle>1</WoodTwigBundle>
    </products>
	<recipeUsers>
		<li>CraftingSpot</li>
	</recipeUsers>
  </RecipeDef>
  
  <RecipeDef>
    <defName>Make_WoodTwigBundle_Bulk</defName>
    <label>Make twig bundle (x10)</label>
    <description>Make 10 twig bundles at once.</description>
    <jobString>Making twigs into 10 twig bundles.</jobString>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodTwig</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodTwig</li> 
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <WoodTwigBundle>10</WoodTwigBundle>
    </products>
	<recipeUsers>
		<li>CraftingSpot</li>
	</recipeUsers>
  </RecipeDef>

</Defs>