<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- general -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Grass Is Hay</li>
			<li>Grass Is Still Hay</li>
		</mods>
        <nomatch Class="PatchOperationSequence">
            <success>Always</success>
            <operations>			
                <li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Plant_Bush"]/plant</xpath>
					<value>
						<harvestedThingDef>WoodTwig</harvestedThingDef>
						<harvestYield>10</harvestYield>
						<harvestTag>Wood</harvestTag>
						<harvestMinGrowth>0.40</harvestMinGrowth>
						<harvestFailable>false</harvestFailable>
					</value>
                </li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Plant_TallGrass"]/plant</xpath>
					<value>
						<harvestedThingDef>Hay</harvestedThingDef>
						<harvestYield>5</harvestYield>
						<harvestTag>Standard</harvestTag>
						<harvestMinGrowth>0.40</harvestMinGrowth>
						<harvestFailable>false</harvestFailable>
					</value>
                </li>
			</operations>
        </nomatch>
	</Operation>

	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="Plant_Brambles"]/plant</xpath>
