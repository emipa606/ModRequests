<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef ParentName="CookMealBase">
    <defName>ReheatArmyRation</defName>
    <label>re-heat army ration</label>
    <description>Re-heat an army ration into and army ration meal.</description>
    <jobString>Re-heating army ration.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ArmyRation</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <ArmyRationMeal>1</ArmyRationMeal>
    </products>
	<fixedIngredientFilter>
      <thingDefs>
        <li>ArmyRation</li>
      </thingDefs>
    </fixedIngredientFilter>
    <skillRequirements>
      <Cooking>10</Cooking>
    </skillRequirements>
    <displayPriority>1410</displayPriority>
  </RecipeDef>
  
