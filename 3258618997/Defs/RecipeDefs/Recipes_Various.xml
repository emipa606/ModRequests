  <RecipeDef ParentName="BaseMechanoidResurrectionRecipe">
    <defName>ResurrectLightModifiedMech</defName>
    <label>resurrect light modified mechanoids</label>
    <description>Resurrect a friendly modified mechanoid of the light weight class. So long as the mechanoid's body is not completely destroyed, it can be resurrected.</description>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Corpse_Mech_CourierSix</li>
