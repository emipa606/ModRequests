<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>HowlingSpider</defName>
    <workerClass>Necro.ThoughtWorker_HowlingSpider</workerClass>
    <effectMultiplyingStat>PsychicSensitivity</effectMultiplyingStat>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>howling spider (intense)</label>
        <description>STAY AWAY!!!.</description>
        <baseMoodEffect>-35</baseMoodEffect>
      </li>
      <li>
        <label>howling spider (strong)</label>
        <description>Its howling hurts my ears.</description>
        <baseMoodEffect>-25</baseMoodEffect>
      </li>
      <li>
        <label>howling spider (distant)</label>
        <description>What the fuck is that.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ExecutionerGhoul</defName>
    <workerClass>Necro.ThoughtWorker_ExecutionerGhoul</workerClass>
    <effectMultiplyingStat>PsychicSensitivity</effectMultiplyingStat>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>executioner ghoul (intense)</label>
        <description>NO! NO! STAY AWAY!!!.</description>
        <baseMoodEffect>-35</baseMoodEffect>
      </li>
      <li>
        <label>executioner ghoul (strong)</label>
        <description>That thing. Its smile feels ominous</description>
        <baseMoodEffect>-25</baseMoodEffect>
      </li>
      <li>
        <label>executioner ghoul (distant)</label>
        <description>I feel a sudden chill through my skin.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>