<Defs>

<!-- Flight -->

  <SoundDef>
    <defName>Pawn_Bird_BarnOwl_Fly</defName>
    <context>MapOnly</context>    
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Pawn/Animal/BarnOwl/WingFlap</clipPath>
          </li>
        </grains>
        <volumeRange>25~35</volumeRange>
        <pitchRange>1</pitchRange>
        <distRange>0~30</distRange>
        <repeatMode>NeverTwice</repeatMode>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>
  
