<Patch>

<!-- Barn Owl - Nocturnal -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[XND] Nocturnal Animals</li>
        </mods>
        <match Class="PatchOperationAddModExtension">
            <xpath>/Defs/ThingDefs_Races[defName="BB_BarnOwl`]</xpath>
            <value>
                <li Class="NocturnalAnimals.ExtendedRaceProperties">
                    <bodyClock>Nocturnal</bodyClock>
                </li>
            </value>
        </match>
    </Operation>

<!-- Eagle Owl - Nocturnal -->

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>[XND] Nocturnal Animals</li>
    </mods>
    <match Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDefs_Races[defName="BB_EagleOwl`]</xpath>
        <value>
            <li Class="NocturnalAnimals.ExtendedRaceProperties">
                <bodyClock>Nocturnal</bodyClock>
            </li>
        </value>
    </match>
</Operation>

</Patch>