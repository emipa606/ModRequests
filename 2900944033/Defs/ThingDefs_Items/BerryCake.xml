<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="OrganicProductBase">
		<defName>BDBE_BerryCake</defName>
		<label>berry cake</label>
		<description>A mixture of plant food preserved in jam or cider, The addition of raisins and other condiments improved the taste this literal food bar to "not bad" level. It lasts a very long time without refrigeration. Great for traveling.</description>
		<thingClass>ThingWithComps</thingClass>
		<thingCategories>
			<li>Foods</li>
		</thingCategories>
		<graphicData>
			<texPath>Things/Item/Resource/BDBE_BerryCake</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<MarketValue>8</MarketValue>
			<Mass>0.02</Mass>
			<Flammability>0.6</Flammability>
			<WorkToMake>700</WorkToMake>
			<DeteriorationRate>2</DeteriorationRate>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<tradeTags>
			<li>BDBE_BerryProduct</li>
		</tradeTags>
		<ingestible>
			<foodType>Meal</foodType>
			<preferability>MealSimple</preferability>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
			<optimalityOffsetHumanlikes>6</optimalityOffsetHumanlikes>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>90</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li Class="CompProperties_Ingredients">
				<noIngredientsFoodKind>Meat</noIngredientsFoodKind>
			</li>
			<li Class="CompProperties_FoodPoisonable" />
		</comps>
		<allowedArchonexusCount>200</allowedArchonexusCount>
	</ThingDef>

	<RecipeDef>
		<defName>BDBE_MakeBerryCake</defName>
		<label>make berry cake</label>
		<description>Make berry cake, a mixture of plant food preserved in jam or cider. It lasts a very long time without refrigeration. Great for traveling.</description>
		<jobString>Making berry cake.</jobString>
		<workAmount>700</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<recipeUsers>
			<li>FueledStove</li>
			<li>ElectricStove</li>
			<li>Campfire</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BDBE_BerryJam</li>
					</thingDefs>
				</filter>
				<count>0.25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BDBE_Raisin</li>
					</thingDefs>
				</filter>
				<count>0.12</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>0.75</count>
			</li>
		</ingredients>
		<products>
			<BDBE_BerryCake>10</BDBE_BerryCake>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
			<thingDefs>
				<li>BDBE_Raisin</li>
				<li>BDBE_BerryJam</li>
			</thingDefs>
		</fixedIngredientFilter>
		<workSkill>Cooking</workSkill>
		<researchPrerequisite>Pemmican</researchPrerequisite>
	</RecipeDef>

