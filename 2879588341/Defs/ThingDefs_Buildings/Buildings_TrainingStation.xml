<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>PRF_TrainingStation</defName>
    <label>training workstation</label>
    <thingClass>Building_WorkTable</thingClass>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
    <li>BuildingsAutomation</li>
    </thingCategories>
    <graphicData>
      <texPath>PRF_TrainingStation</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,1.2)</drawSize>
    </graphicData>
    <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <statBases>
      <WorkToMake>3200</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>15</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>An AI-driven workstation designed to educate colonists.</description>
    <size>(3,1)</size>
    <designationCategory>Industrial</designationCategory>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <costList>
      <PRF_ElectronicChip_I>1</PRF_ElectronicChip_I>
      <PRF_DataDisk>1</PRF_DataDisk>
      <Steel>180</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>350</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <recipes>
      <li>TrainingAnimals</li>
      <li>TrainingArtistic</li>
      <li>TrainingConstruction</li>
      <li>TrainingCooking</li>
      <li>TrainingCrafting</li>
      <li>TrainingGrowing</li>
      <li>TrainingMedicine</li>
      <li>TrainingMelee</li>
      <li>TrainingMining</li>
      <li>TrainingIntellectual</li>
      <li>TrainingShooting</li>
      <li>TrainingSocial</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>
</Defs>