    <ThingDef ParentName="UnderWhereIndustrial">
    <defName>UnderWhere_Panties</defName>
    <label>panties</label>
    <description>A pair of simple women's undergarments.</description>
    <graphicData>
      <texPath>UWUnderwear/panties</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li>
        <compClass>UnderWhere.CompFemaleOnly</compClass>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>10</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
	      <Mass>0.1</Mass>
      <WorkToMake>1500</WorkToMake>
      <Insulation_Cold>1</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.01</MoveSpeed>
      <MentalBreakThreshold>-0.1</MentalBreakThreshold>
    </equippedStatOffsets>
		<generateCommonality>5</generateCommonality>
    <apparel>
      <wornGraphicPath>UWUnderwear/panties/panties</wornGraphicPath>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>UnderwearBottoms</li>
      </layers>
      <tags>
        <li>Outlander</li>
        <li>Spacer</li>
		<li>IndustrialBasic</li>
		<li>IndustrialAdvanced</li>
		<li>OnlyGender_female</li>
      </tags>
	  <gender>Female</gender>
	</apparel>
  </ThingDef>
  
