<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>KACKS-1_AW</defName>
    <label>KAC KS-1</label>
    <description>A rifle boasting a 13.7-inch barrel and an integrated suppressor, which has garnered rave reviews from testers who claim it to be the finest and most powerful in the AR platform.</description>
    <graphicData>
      <texPath>Things/AWeapon/KAC KS-1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.35</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>410</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>21000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
	  <Plasteel>2</Plasteel>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_KACKS-1_AW</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>35</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>BOCWXM4SD</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>AssaultRifle</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_KACKS-1_AW</defName>
    <label>KAC KS-1 Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
	  <armorPenetrationBase>0.19</armorPenetrationBase>
	  <stoppingPower>0.5</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  
  </Defs>