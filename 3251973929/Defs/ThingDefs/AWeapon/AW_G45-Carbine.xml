<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>G45Carbine_AW</defName>
    <label>G45(Carbine)</label>
    <description>On the basis of GLOCK 45 A pistol carbine kit that imitates the MP17.</description>
    <graphicData>
      <texPath>Things/AWeapon/G45（Carbine）</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.15</drawSize>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <recipeUsers>
		<li>AWManufacturing</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>410</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
	  <Plasteel>1</Plasteel>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_G45Carbine_AW</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>25</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <soundCast>G45-Carbine</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
      <li>Autopistol</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>5</power>
		<armorPenetration>0.13</armorPenetration>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_G45Carbine_AW</defName>
    <label>G45(Carbine) Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>10</damageAmountBase>
	  <armorPenetrationBase>0.18</armorPenetrationBase>
	  <stoppingPower>0.5</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  
  </Defs>