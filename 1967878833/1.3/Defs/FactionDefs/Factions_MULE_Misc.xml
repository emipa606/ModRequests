<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef ParentName="FactionBase" Name="MULE_Base_Common" Abstract="True">
		<pawnSingular>MULE Renagade</pawnSingular>
		<pawnsPlural>MULE Renagades</pawnsPlural>
		<listOrderPriority>20</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<canStageAttacks>true</canStageAttacks>
		<canSiege>true</canSiege>
		<factionIconPath>World/MULE_icon</factionIconPath>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<geneticVariance>0.1</geneticVariance>
		<fixedName>Homo Gestalts</fixedName>
		<!--<factionNameMaker>MULENamerFaction</factionNameMaker>-->
		<settlementNameMaker>MULENamerFaction</settlementNameMaker>
		<!--<pawnNameMaker>MULENamer</pawnNameMaker>-->
		<techLevel>Industrial</techLevel>
		<backstoryFilters>
		  <li>
			<categories>
			  <li>Outlander</li>
			</categories>
			<commonality>0.95</commonality>
		  </li>
		  <li>
			<categories>
			  <li>Offworld</li>
			</categories>
			<commonality>0.05</commonality>
		  </li>
		</backstoryFilters>  
		<leaderTitle>Lead Operator</leaderTitle>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 1)</li>
				<!--Constant 1 at all points levels-->
			</points>
		</raidCommonalityFromPointsCurve>
		<caravanTraderKinds>
			<li>Caravan_MULE_BulkGoods</li>
			<li>Caravan_MULE_CombatSupplier</li>
			<li>Caravan_MULE_PirateMerchant</li>
			<li>Caravan_MULE_Exotic</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_MULE_Standard</li>
			<li>Caravan_MULE_BulkGoods</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_MULE_Standard</li>
			<li>Caravan_MULE_Exotic</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>
			<min>-40</min>
			<max>45</max>
		</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(800, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, ranged with melee mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
				  <MULE_Scout>10</MULE_Scout>
				  <MULE_Guard>15</MULE_Guard>
				  <MULE_Operator>5</MULE_Operator>
				</options>
			</li>
			<li>
				<!-- Peaceful -->
				<kindDef>Peaceful</kindDef>
				<options>
				  <MULE_Scout>10</MULE_Scout>
				  <MULE_Guard>5</MULE_Guard>
				  <MULE_Operator>1</MULE_Operator>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<MULE_Trader>1</MULE_Trader>
				</traders>
				<carriers>
					<Muffalo>3</Muffalo>
				</carriers>
				<guards>
				  <MULE_Scout>3</MULE_Scout>
				  <MULE_Guard>8</MULE_Guard>
				  <MULE_Operator>1</MULE_Operator>
				</guards>
			</li>
			
			<li>
				<!-- Settlement. -->
				<kindDef>Settlement</kindDef>
				<options>
				  <MULE_Scout>6</MULE_Scout>
				  <MULE_Guard>15</MULE_Guard>
				  <MULE_Operator>5</MULE_Operator>
				</options>
			</li>
		</pawnGroupMakers>
	</FactionDef>

	<FactionDef ParentName="MULE_Base_Common">
		<defName>MULEBase</defName>
		<label>Mule Base</label>
		<description>A base of MULEs. They seem to have come here purely to harvest organs and take cargo from the surrounding area.</description>
		<colorSpectrum>
		  <li>(255, 204, 102)</li>
		  <li>(255, 153, 5)</li>
		</colorSpectrum>
	</FactionDef>
</Defs>