<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ScenarioDef>
		<defName>MULEDrifters</defName>
		<label>MULE Drifters</label>
		<description>You barely survived your last cargo run, for what? A few handful of silver. You and a group of like minded indivudals decide to leave your caravan in the middle of the night.</description>
		<scenario>
			<summary>Four MULEs venture out to survive.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>MULE_Player</factionDef>
			</playerFaction>
			<parts>
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>4</pawnCount>
					<pawnChoiceCount>8</pawnChoiceCount>
				</li>
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
				</li>
				<li Class="ScenPart_ForcedHediff">
					<def>ForcedHediff</def>
					<chance>0.5</chance>
					<context>PlayerStarter</context>
					<hediff>Malnutrition</hediff>
					<severityRange>0.2~0.4</severityRange>
				</li>
				<li Class="ScenPart_ForcedHediff">
					<def>ForcedHediff</def>
					<chance>0.25</chance>
					<context>NonPlayer</context>
					<hediff>YayoHigh</hediff>
					<severityRange>0.411974~0.55621</severityRange>
				</li>
				<li Class="ScenPart_SetNeedLevel">
					<def>SetNeedLevel</def>
					<chance>1</chance>
					<context>PlayerStarter</context>
					<need>Rest</need>
					<levelRange>0.2925926~0.5703704</levelRange>
				</li>
				<li Class="ScenPart_StartingAnimal">
					<def>StartingAnimal</def>
					<animalKind>Muffalo</animalKind>
					<count>2</count>
					<bondToRandomPlayerPawnChance>1</bondToRandomPlayerPawnChance>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>500</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pemmican</thingDef>
					<count>300</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>SmokeleafLeaves</thingDef>
					<count>150</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Kibble</thingDef>
					<count>150</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineIndustrial</thingDef>
					<count>10</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Steel</thingDef>
					<count>200</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>GoJuice</thingDef>
					<count>25</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>WakeUp</thingDef>
					<count>10</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Yayo</thingDef>
					<count>15</count>
				</li>
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>After drifting away from the main caravan, you decided this location would be suited to make an Outpost.</text>
					<closeSound>GameStartSting</closeSound>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>

</Defs>