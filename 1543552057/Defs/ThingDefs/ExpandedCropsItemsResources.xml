<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- New crop items -->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

  <ThingDef ParentName="PlantFoodRawBase">
    <defName>RawTomatoes</defName>
		<label>tomatoes</label>
		<description>A sharp-tasting fruit that has many uses.</description>
    <graphicData>
      <texPath>Things/Tomato</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.5</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>21</daysToRotStart>
				<rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
      <tasteThought>AteRawTomato</tasteThought>
    </ingestible>
  </ThingDef>

  <ThingDef ParentName="PlantFoodRawBase">
		<defName>RawCarrots</defName>
		<label>carrots</label>
		<description>Crunchy vegetable with a refreshing taste. May help you see in the dark.</description>
    <graphicData>
      <texPath>Things/Carrot</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.5</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>30</daysToRotStart>
				<rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
      <tasteThought>AteRawCarrot</tasteThought>
    </ingestible>
  </ThingDef>

  <ThingDef ParentName="PlantFoodRawBase">
		<defName>RawLettuce</defName>
		<label>lettuce</label>
		<description>Their leaves are an essential part of many salads. Wilts quite quickly unless refridgerated.</description>
    <graphicData>
      <texPath>Things/Lettuce</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.5</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>7</daysToRotStart>
				<rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
      <tasteThought>AteRawLettuce</tasteThought>
    </ingestible>
    <stackLimit>50</stackLimit>
  </ThingDef>

</Defs>
