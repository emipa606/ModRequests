				<IsMoving>true</IsMoving>
				<ThinIceDef>WF_RiverIceThin</ThinIceDef>
				<IceDef>WF_RiverIce</IceDef>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/TerrainDef[defName="WaterMovingChestDeep"]</xpath>
