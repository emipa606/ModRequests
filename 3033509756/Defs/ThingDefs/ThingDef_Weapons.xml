            <weaponTags>
                <li>NeolithicKobold</li>
            </weaponTags>
            <costList>
                <Kobold_Bone>1</Kobold_Bone>
            </costList>
            <statBases>
                <WorkToMake>1200</WorkToMake>
                <Mass>1</Mass>
            </statBases>
            <tools>
                <li>
                    <label>handle</label>
                    <capacities>
                        <li>Blunt</li>
                    </capacities>
                    <power>9</power>
                    <cooldownTime>2</cooldownTime>
                </li>
                <li>
                    <label>blade</label>
                    <capacities>
                        <li>Kobold_CutToxic</li>
                    </capacities>
                    <power>12</power>
                    <cooldownTime>1.5</cooldownTime>
                </li>
                <li>
                    <label>point</label>
                    <capacities>
                        <li>Kobold_StabToxic</li>
                    </capacities>
                    <power>12</power>
                    <cooldownTime>2</cooldownTime>
                </li>
            </tools>
        </ThingDef>
