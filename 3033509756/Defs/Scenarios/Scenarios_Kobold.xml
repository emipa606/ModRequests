<?xml version="1.0" encoding="utf-8" ?>
    <Defs>
        <ScenarioDef>
            <defName>LostKobolds</defName>
            <label>Lost Kobolds</label>
            <description>Kobold went on mission but kobold does not remember what mission was. Where are kobolds?</description>
            <scenario>
                <summary>3 lost kobolds.</summary>
                <playerFaction>
                    <def>PlayerFaction</def>
                    <factionDef>LTS_KoboldColony</factionDef>
                </playerFaction>
                <parts>
                    <!-- Config pages -->
                    <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
                        <def>ConfigPage_ConfigureStartingPawns</def>
                        <pawnCount>3</pawnCount>
                        <pawnChoiceCount>8</pawnChoiceCount>
                    </li>
                    <!-- Player starting stuff spawn method-->
                    <li Class="ScenPart_PlayerPawnsArriveMethod">
                        <def>PlayerPawnsArriveMethod</def>
                        <method>Standing</method>
                    </li>
                    <li Class="ScenPart_StartingThing_Defined">
                        <def>StartingThing_Defined</def>
                        <thingDef>Pemmican</thingDef>
                        <count>600</count>
                    </li>
                    <li Class="ScenPart_StartingThing_Defined">
                        <def>StartingThing_Defined</def>
                        <thingDef>MedicineHerbal</thingDef>
                        <count>5</count>
                    </li>
                    <li Class="ScenPart_StartingThing_Defined">
                        <def>StartingThing_Defined</def>
                        <thingDef>Kobold_Bone</thingDef>
                    </li>
                    <li Class="ScenPart_StartingThing_Defined">
                        <def>StartingThing_Defined</def>
                        <thingDef>Kobold_BoneDagger</thingDef>
                    </li>
                    <li Class="ScenPart_StartingThing_Defined">
                        <def>StartingThing_Defined</def>
                        <thingDef>Kobold_BoneSword</thingDef>
                    </li>
                    <li Class="ScenPart_Naked">
                        <def>Naked</def>
                        <context>PlayerStarter</context>
                    </li>
                </parts>
            </scenario>
        </ScenarioDef>
    </Defs>
