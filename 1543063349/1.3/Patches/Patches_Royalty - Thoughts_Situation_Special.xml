<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Royalty</li>
        </mods>
        <match Class="PatchOperationSequence">
		<success>Always</success>
		    <operations>

			    <!-- PsychicEntropyOverloaded -->

		    	<li Class="PatchOperationReplace">
			    	<xpath>Defs/ThoughtDef[defName = "PsychicEntropyOverloaded"]/stages/li[1]/baseMoodEffect</xpath>
			    	<value>
			    		<baseMoodEffect>-4</baseMoodEffect>
			    	</value>
			    </li>
			    <li Class="PatchOperationReplace">
			    	<xpath>Defs/ThoughtDef[defName = "PsychicEntropyOverloaded"]/stages/li[2]/baseMoodEffect</xpath>
			    	<value>
			    		<baseMoodEffect>-10</baseMoodEffect>
			    	</value>
			    </li>
			    <li Class="PatchOperationReplace">
			    	<xpath>Defs/ThoughtDef[defName = "PsychicEntropyOverloaded"]/stages/li[3]/baseMoodEffect</xpath>
			    	<value>
			    		<baseMoodEffect>-25</baseMoodEffect>
			    	</value>
			    </li>
	
	        </operations>
        </match>
    </Operation>
	
</Patch>
