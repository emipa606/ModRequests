<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Royalty</li>
        </mods>
        <match Class="PatchOperationSequence">
		<success>Always</success>
		    <operations>
			
			    <!-- ListeningToHarp -->
				
			    <li Class="PatchOperationReplace">
			    	<xpath>Defs/ThoughtDef[defName = "ListeningToHarp"]/stages/li[1]/baseMoodEffect</xpath>
			    	<value>
			    		<baseMoodEffect>3</baseMoodEffect>
			    	</value>
			    </li>
				
				<!-- ListeningToPiano -->
				
			    <li Class="PatchOperationReplace">
			    	<xpath>Defs/ThoughtDef[defName = "ListeningToPiano"]/stages/li[1]/baseMoodEffect</xpath>
			    	<value>
			    		<baseMoodEffect>5</baseMoodEffect>
			    	</value>
			    </li>
				
	        </operations>
        </match>
    </Operation>

</Patch>
