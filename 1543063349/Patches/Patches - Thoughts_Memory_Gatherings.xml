<Patch>

	<!-- GotMarried -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThoughtDef[defName = "GotMarried"]/stages/li[1]/baseMoodEffect</xpath>
		<value>
			<baseMoodEffect>30</baseMoodEffect>
		</value>
	</Operation>

	<!-- AttendedWedding -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThoughtDef[defName = "AttendedWedding"]/durationDays</xpath>
		<value>
			<durationDays>15</durationDays>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThoughtDef[defName = "AttendedWedding"]/stackLimit</xpath>
		<value>
			<stackLimit>3</stackLimit>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThoughtDef[defName = "AttendedWedding"]</xpath>
		<value>
			<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThoughtDef[defName = "AttendedWedding"]/stages/li[1]/baseMoodEffect</xpath>
		<value>
			<baseMoodEffect>15</baseMoodEffect>
		</value>
	</Operation>

	<!-- AttendedParty -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThoughtDef[defName = "AttendedParty"]/durationDays</xpath>
		<value>
			<durationDays>7.5</durationDays>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThoughtDef[defName = "AttendedParty"]/stackLimit</xpath>
		<value>
			<stackLimit>3</stackLimit>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThoughtDef[defName = "AttendedParty"]</xpath>
		<value>
			<stackedEffectMultiplier>1</stackedEffectMultiplier>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThoughtDef[defName = "AttendedParty"]/stages/li[1]/baseMoodEffect</xpath>
		<value>
			<baseMoodEffect>5</baseMoodEffect>
		</value>
	</Operation>
	
</Patch>
