<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Royalty</li>
        </mods>
        <match Class="PatchOperationSequence">
		<success>Always</success>
		    <operations>
			
            	<!-- GainedTitle -->

                <li Class="PatchOperationReplace">
            		<xpath>Defs/ThoughtDef[defName = "GainedTitle"]/durationDays</xpath>
            		<value>
            			<durationDays>30</durationDays>
            		</value>
            	</li>
	            <li Class="PatchOperationReplace">
	            	<xpath>Defs/ThoughtDef[defName = "GainedTitle"]/stages/li[1]/baseMoodEffect</xpath>
	            	<value>
	            		<baseMoodEffect>10</baseMoodEffect>
	            	</value>
	            </li>
	
	            <!-- LostTitle -->

                <li Class="PatchOperationReplace">
	            	<xpath>Defs/ThoughtDef[defName = "LostTitle"]/durationDays</xpath>
	            	<value>
	            		<durationDays>30</durationDays>
            		</value>
            	</li>
            	<li Class="PatchOperationReplace">
            		<xpath>Defs/ThoughtDef[defName = "LostTitle"]/stages/li[1]/baseMoodEffect</xpath>
            		<value>
            			<baseMoodEffect>-10</baseMoodEffect>
	            	</value>
	            </li>
	
            	<!-- TitleApparelRequirementNotMet -->

            	<li Class="PatchOperationReplace">
	            	<xpath>Defs/ThoughtDef[defName = "TitleApparelRequirementNotMet"]/stages/li[1]/baseMoodEffect</xpath>
	            	<value>
	            		<baseMoodEffect>-10</baseMoodEffect>
	            	</value>
	            </li>
	
	            <!-- TitleApparelMinQualityNotMet -->

	            <li Class="PatchOperationReplace">
	            	<xpath>Defs/ThoughtDef[defName = "TitleApparelMinQualityNotMet"]/stages/li[1]/baseMoodEffect</xpath>
	            	<value>
	            		<baseMoodEffect>-4</baseMoodEffect>
	            	</value>
	            </li>
	
	            <!-- TitleThroneroomRequirementsNotMet -->

	            <li Class="PatchOperationReplace">
	            	<xpath>Defs/ThoughtDef[defName = "TitleThroneroomRequirementsNotMet"]/stages/li[1]/baseMoodEffect</xpath>
	            	<value>
	            		<baseMoodEffect>-7</baseMoodEffect>
	            	</value>
	            </li>
	
	            <!-- TitleBedroomRequirementsNotMet -->

	            <li Class="PatchOperationReplace">
	            	<xpath>Defs/ThoughtDef[defName = "TitleBedroomRequirementsNotMet"]/stages/li[1]/baseMoodEffect</xpath>
	            	<value>
	            		<baseMoodEffect>-4</baseMoodEffect>
	            	</value>
	            </li> 
	
	            <!-- TitleNoThroneRoom -->

	            <li Class="PatchOperationReplace">
	            	<xpath>Defs/ThoughtDef[defName = "TitleNoThroneRoom"]/stages/li[1]/baseMoodEffect</xpath>
            		<value>
	            		<baseMoodEffect>-15</baseMoodEffect>
	            	</value>
	            </li>
	
	            <!-- TitleNoPersonalBedroom -->

	            <li Class="PatchOperationReplace">
	            	<xpath>Defs/ThoughtDef[defName = "TitleNoPersonalBedroom"]/stages/li[1]/baseMoodEffect</xpath>
	            	<value>
	            		<baseMoodEffect>-10</baseMoodEffect>
	            	</value>
	            </li>
	
	        </operations>
        </match>
    </Operation>
	
</Patch>
