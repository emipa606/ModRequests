<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!-- Childhood -->

	<AlienRace.BackstoryDef>
		<defName>AutomatonDoll</defName>
		<title>doll automaton</title>
		<titleShort>doll</titleShort>
		<baseDescription>[PAWN_nameDef] is delicate clockwork doll. Dolls of this sort are suited for tasks that require sociability or caring.</baseDescription>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ClockworkDoll</li>
		</spawnCategories>
		<skillGains>
			<li>
				<defName>Social</defName>
				<amount>3</amount>
			</li>
			<li>
				<defName>Medicine</defName>
				<amount>2</amount>
			</li>
		</skillGains>
	</AlienRace.BackstoryDef>
	
