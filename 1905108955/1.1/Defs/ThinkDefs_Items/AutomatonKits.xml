<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Abstract="True" Name="WindUpKit">
    <thingClass>ThingWithComps</thingClass>
    <graphicData>
		<texPath>Things/Item/Prosthetic</texPath>
		<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<category>Item</category>
    <pathCost>10</pathCost>
    <useHitPoints>false</useHitPoints>
	<selectable>true</selectable>	
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <Mass>5.00</Mass>
      <Flammability>0</Flammability>
    </statBases>
	<thingCategories>
      <li>Windups</li>
    </thingCategories>
	<tickerType>Normal</tickerType>
	<stackLimit>1</stackLimit>
	<comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
  </ThingDef>
	
  <ThingDef ParentName="WindUpKit">
    <defName>DollAutomatonKit</defName>
    <label>doll automaton kit</label>
    <description>A self-assembing delicate doll automaton.</description>
    <statBases>
      <MarketValue>1000</MarketValue>
    </statBases>
    <comps>
      <li Class="Clockwork.CompProperties_WindUp">
        <spawnPawn>ClockworkDoll_Colonist</spawnPawn>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="WindUpKit">
    <defName>BrassAutomatonKit</defName>
    <label>brass automaton kit</label>
    <description>A self-assembing brilliant brass automaton.</description>
    <statBases>
      <MarketValue>1000</MarketValue>
    </statBases>
    <comps>
      <li Class="Clockwork.CompProperties_WindUp">
        <spawnPawn>ClockworkBrass_Colonist</spawnPawn>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="WindUpKit">
    <defName>BruteAutomatonKit</defName>
    <label>brute automaton kit</label>
    <description>A self-assembing brawny brute automaton.</description>
    <statBases>
      <MarketValue>1000</MarketValue>
    </statBases>
    <comps>
      <li Class="Clockwork.CompProperties_WindUp">
        <spawnPawn>ClockworkBrute_Colonist</spawnPawn>
      </li>
    </comps>
  </ThingDef>
  
 </Defs>
