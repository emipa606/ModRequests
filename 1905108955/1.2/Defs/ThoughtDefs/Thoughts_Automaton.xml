<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThoughtDef>
		<defName>AutomatonButcheredHuman</defName>
		<durationDays>6</durationDays>
		<stackLimit>10</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>I butchered a human...</label>
				<description>Why must I cut up others?</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KnowAutomatonButcheredHuman</defName>
		<durationDays>6</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>a human was butchered</label>
				<description>The others say it was necessary.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>AutomatonButcheredAutomaton</defName>
		<durationDays>6</durationDays>
		<stackLimit>10</stackLimit>
		<stackedEffectMultiplier>0.75</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>I butchered an automaton...</label>
				<description>The horror! The wires sprawled about... Their ticking heart in my cold hands...</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KnowAutomatonButcheredAutomaton</defName>
		<durationDays>6</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>an automaton was scrapped</label>
				<description>What if I'm next?</description>
				<baseMoodEffect>-6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
