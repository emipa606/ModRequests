<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
    <defName>ClockworkEmporium</defName>
    <label>clockwork emporium</label>
    <description>The Clockwork Emporium is an ancient trade guild specialising in clockwork machinery. It is now self governed by clockwork automata.</description>
    <pawnsPlural>automatons</pawnsPlural>
    <settlementGenerationWeight>0.025</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>The Clockwork Emporium</fixedName>
    <backstoryCategories><li>ClockworkDoll</li></backstoryCategories>
    <settlementNameMaker>NamerSettlementPirate</settlementNameMaker>
    <canMakeRandomly>true</canMakeRandomly>
	  <leaderTitle>grand merchant</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/ClockworkEmporiumBase</factionIconPath>
	  <hairTags>
		  <li>NonExisting</li>
  	</hairTags>
	  <caravanTraderKinds>
      <li>Caravan_Automaton_AutomatonMerchant</li>
	    <li>Caravan_Automaton_WindupMerchant</li>
    </caravanTraderKinds>
	  <visitorTraderKinds>
      <li>Visitor_Automaton_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Automaton_Standard</li>
    </baseTraderKinds>
    <humanlikeFaction>true</humanlikeFaction>
    <hidden>false</hidden>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>true</canUseAvoidGrid>
    <techLevel>Industrial</techLevel>
  	<earliestRaidDays>12</earliestRaidDays>
    <startingGoodwill>
      <min>10</min>
      <max>30</max>
    </startingGoodwill>
    <naturalColonyGoodwill>
      <min>-50</min>
      <max>50</max>
    </naturalColonyGoodwill>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
	   <li>
	    <kindDef>Combat</kindDef>
        <options>
		  <Automaton_Servant>5</Automaton_Servant>
          <Automaton_Worker>5</Automaton_Worker>
		  <Automaton_Guard>10</Automaton_Guard>
          <Automaton_Envoy>10</Automaton_Envoy>
        </options>
       </li>
	   <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Automaton_Worker>5</Automaton_Worker>
		  <Automaton_Servant>5</Automaton_Servant>
          <Automaton_Guard>10</Automaton_Guard>
          <Automaton_Envoy>10</Automaton_Envoy>
        </options>
      </li>
	  <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Automaton_Trader>1</Automaton_Trader>
        </traders>
        <carriers>
          <ClockworkBeetle>2</ClockworkBeetle>
		  <Muffalo>5</Muffalo>
        </carriers>
        <guards>
		 <Automaton_Servant>5</Automaton_Servant>
          <Automaton_Worker>5</Automaton_Worker>
          <Automaton_Guard>10</Automaton_Guard>
		</guards>
      </li>
	  <li>
        <kindDef>Settlement</kindDef>
        <options>
		  <Automaton_Worker>5</Automaton_Worker>
		  <Automaton_Servant>5</Automaton_Servant>
          <Automaton_Guard>10</Automaton_Guard>
          <Automaton_Envoy>5</Automaton_Envoy>
        </options>
      </li>
    </pawnGroupMakers>
    <allowedArrivalTemperatureRange>
      <min>-255</min>
      <max>255</max>
    </allowedArrivalTemperatureRange>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>

</Defs>
