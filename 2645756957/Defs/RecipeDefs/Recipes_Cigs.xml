<?xml version="1.0" encoding="utf-8" ?>
<Defs>





	<RecipeDef>
		<defName>MakeLightCigarettes</defName>
		<label>make light cigarettes</label>
		<description>Make a small, rolled paper tube stuffed loosely with few tobacco leaves.</description>
		<jobString>Making light cigarettes.</jobString>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workAmount>800</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<researchPrerequisite>MoreCigarettes</researchPrerequisite>
		<recipeUsers>
			<li>DrugLab</li>	
		</recipeUsers>

		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>VBE_RawTobacco</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			

		</ingredients>
		<fixedIngredientFilter>			
			<thingDefs>
				<li>VBE_RawTobacco</li>
				
			</thingDefs>
			<categories>
				
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>			
			<thingDefs>
				<li>VBE_RawTobacco</li>
				
			</thingDefs>
			<categories>
				
			</categories>
		</defaultIngredientFilter>
		
		<products>
			<LightCigarettes>5</LightCigarettes>
		</products>
		
	</RecipeDef>

	



