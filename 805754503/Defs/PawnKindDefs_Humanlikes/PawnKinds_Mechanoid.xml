<?xml version="1.0" encoding="utf-8" ?>
<PawnKindDefs>

  <PawnKindDef Name="MechanoidBase" Abstract="True">
    <bodyGraphicData>
      <shaderType>Cutout</shaderType>
    </bodyGraphicData>
    <dessicatedBodyGraphicData>
      <shaderType>Cutout</shaderType>
    </dessicatedBodyGraphicData>
  </PawnKindDef>

  <PawnKindDef>
    <defName>Centipede</defName>
    <label>centipede</label>
    <race>Mechanoid_Centipede</race>
    <combatPower>1000</combatPower>
    <defaultFactionType>Mechanoid</defaultFactionType>
    <aiAvoidCover>true</aiAvoidCover>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/Centipede</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>3</drawSize>
          <shadowData>
            <volume>(6.0, 4.1, 3.8)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>
      <min>7000</min>
      <max>7000</max>
    </weaponMoney>
    <weaponTags>
      <li>MechanoidGunHeavy</li>
    </weaponTags>
  </PawnKindDef>


  <PawnKindDef>
    <defName>Scyther</defName>
    <label>scyther</label>
    <race>Mechanoid_Scyther</race>
    <combatPower>50</combatPower>
    <defaultFactionType>Mechanoid</defaultFactionType>
    <aiAvoidCover>true</aiAvoidCover>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/Scyther</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.0</drawSize>
          <shadowData>
            <volume>(0.2, 0.4, 0.2)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>
      <min>4000</min>
      <max>4000</max>
    </weaponMoney>
    <weaponTags>
      <li>MechanoidGunMedium</li>
    </weaponTags>
  </PawnKindDef>

</PawnKindDefs>