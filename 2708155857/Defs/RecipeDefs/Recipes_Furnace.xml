<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef Name="Oracle_BrassSmeltBase" Abstract="True">
		<description>Smelts steel and gold into brass ingots.</description>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<effectWorking>Smelt</effectWorking>
		<allowMixingIngredients>false</allowMixingIngredients>	
		<soundWorking>Recipe_Smelt</soundWorking>
			<recipeUsers>
				<li>FueledSmithy</li>
				<li>ElectricSmithy</li>
				<li>ElectricSmelter</li>
			</recipeUsers>	
	</RecipeDef>


 <!-- Brass Ingots --> 
 	<RecipeDef ParentName="Oracle_BrassSmeltBase">
		<defName>Oracle_MakeBrass</defName>
		<workAmount>200</workAmount>		
		<label>Smelt brass x10</label>
		<jobString>Smelting steel and gold into 10 brass ingots</jobString>
		<targetCountAdjustment>10</targetCountAdjustment>	
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>Steel</li>
			  </thingDefs>
			</filter>
			<count>10</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>Gold</li>
			  </thingDefs>
			</filter>
			<count>0.1</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>Steel</li>
			<li>Gold</li>
		  </thingDefs>
		</fixedIngredientFilter>
    <products>
      <Oracle_Brass>10</Oracle_Brass>
    </products>		
  </RecipeDef> 

