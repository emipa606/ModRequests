<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- ============================================================== -->
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_RGTermalSuit</defName>
		<label>termal suit</label>
		<description>Termal Suit usually used by working troops from advanced glitterworld planets.</description>
		<techLevel>Spacer</techLevel>
		<recipeMaker>
      <researchPrerequisite>PilotSuit</researchPrerequisite>
    </recipeMaker>
		<graphicData>
			<texPath>Things/RGApparel/RGTermalSuit/RGTermalSuit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Plasteel>10</Plasteel>
			<Cloth>50</Cloth>
		</costList>
		 <thingCategories>
      <li>Apparel</li>
    </thingCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
			<Mass>.5</Mass>
			<ArmorRating_Blunt>0.03</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
			<Insulation_Cold>65</Insulation_Cold>
			<Insulation_Heat>65</Insulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<apparel>
			<wornGraphicPath>Things/RGApparel/RGTermalSuit/RGTermalSuit</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>Outlander</li>
				<li>Spacer</li>
				<li>Military</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
	
	<!-- ============================================================== -->
	
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_PilotSuit</defName>
		<label>pilot suit</label>
		<description>Powered Pilot Suit Armor usually used by working troops from advanced glitterworld planets.</description>
		<techLevel>Spacer</techLevel>
		<recipeMaker>
      <researchPrerequisite>PilotSuit</researchPrerequisite>
    </recipeMaker>
		<graphicData>
			<texPath>Things/RGApparel/RGPilotSuit/RGPilotSuit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<ComponentIndustrial>8</ComponentIndustrial>
			<Plasteel>80</Plasteel>
			<Steel>50</Steel>
		</costList>
		<thingCategories>
      <li>Apparel</li>
    </thingCategories>
		<statBases>
			<WorkToMake>10000</WorkToMake>
			<MarketValue>3000</MarketValue>
			<Mass>1</Mass>
			<ArmorRating_Blunt>0.30</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
			<ArmorRating_Heat>0.20</ArmorRating_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.08</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<wornGraphicPath>Things/RGApparel/RGPilotSuit/RGPilotSuit</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Outlander</li>
				<li>Spacer</li>
				<li>Military</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
	</ThingDef>
	<!-- ============================================================== -->

  
</Defs>