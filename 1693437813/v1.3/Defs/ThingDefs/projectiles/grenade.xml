  <!-- frag -->
  <ThingDef ParentName="BaseGrenadeProjectile">
	  <defName>SM_Proj_GrenadeFrag</defName>
	  <label>frag grenade</label>
	  <thingClass>Submunition.Projectile_Advanced</thingClass>
	  <graphicData>
	    <texPath>Things/Projectile/Grenade</texPath>
	    <graphicClass>Graphic_Single</graphicClass>
	  </graphicData>
	  <projectile>
	    <explosionRadius>2</explosionRadius>
	    <flyOverhead>true</flyOverhead>
	    <damageDef>Smoke</damageDef>
	    <explosionDelay>100</explosionDelay>
	  </projectile>
	  <modExtensions>
	    <li Class="Submunition.DefAdvancedProjectileExtension">
	      <fragSpreadRadius>5</fragSpreadRadius>
	      <fragCount>50</fragCount>
	      <fragMultiplier>0</fragMultiplier>
	      <fragment>true</fragment>
	      <destroyOnImpact>false</destroyOnImpact>
	      <fragThingDef>SM_Proj_GrenadeFrag_Fragment</fragThingDef>
	    </li>
	  </modExtensions>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
