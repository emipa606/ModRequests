	    <texPath>Things/Projectile/Bullet_Small</texPath>
	    <graphicClass>Graphic_Single</graphicClass>
	  </graphicData>
	  <projectile>
	    <alwaysFreeIntercept>true</alwaysFreeIntercept>
	    <damageDef>SM_Shrapnel</damageDef>
	    <damageAmountBase>5</damageAmountBase>
	    <speed>120</speed>
	  </projectile>
	</ThingDef>

