<Defs>
  <!-- nerve -->
  <ThingDef ParentName="BaseGrenadeProjectile">
		<defName>SM_Proj_Grenade_Nerve_Gas</defName>
		<label>NARQ grenade</label>
		<thingClass>Projectile_Explosive</thingClass>
		<graphicData>
			<texPath>Submunition/Item/Proj_Grenade_Nerve_Gas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
	    <!-- Use default damage from explosion def -->
			<explosionDelay>10</explosionDelay>
	    <damageDef>SM_Danger_Smoke_noShake</damageDef>
	    <damageAmountBase>0</damageAmountBase>
	    <explosionRadius>3</explosionRadius>
	    <flyOverhead>true</flyOverhead>
	    <postExplosionSpawnThingDef>SM_Gas_Nerve</postExplosionSpawnThingDef>
	    <postExplosionSpawnChance>1.0</postExplosionSpawnChance>
		</projectile>
	</ThingDef>

