<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
	
	<!--==================== Barricade ======================== -->	
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName = "Barricade"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Building/Linked/BarricadeMod_Atlas</texPath>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName = "Barricade"]/graphicData/graphicClass</xpath>
		<value>
			<graphicClass>Graphic_Appearances</graphicClass>
		</value>
	</Operation>	

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName = "Barricade"]/uiIconPath</xpath>
		<value>
			<uiIconPath>Things/Building/Linked/BarricadeMod_MenuIcon</uiIconPath>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName = "Barricade"]/uiIconScale</xpath>
	</Operation>	

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName = "Barricade"]/building/blueprintGraphicData/texPath</xpath>
		<value>
			<texPath>Things/Building/Linked/BarricadeMod_Blueprint_Atlas</texPath>
		</value>
	</Operation>	
	
</Patch>		
