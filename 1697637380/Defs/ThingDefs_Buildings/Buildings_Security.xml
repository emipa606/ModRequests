      <texPath>Things/Building/Linked/Barricade_Blueprint_Atlas</texPath>
    </blueprintGraphicData>
    </building>	
    <uiIconPath>Things/Building/Linked/WoodenBarricade_MenuIcon</uiIconPath>	
