<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>MethamphetamineDrug</defName>
    <label>methamphetamine</label>
    <description>A highly addictive drug that will make you very fast, but also has a high chance of causing organ failure and a heart attack.</description>
    <graphicData>
      <texPath>Things/Item/Drug/methamphetaminepill</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>400</WorkToMake>
      <MarketValue>22</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Hard</drugCategory>
      <foodType>Processed</foodType>
      <joyKind>Chemical</joyKind>
      <joy>0.80</joy>
	        <nurseable>true</nurseable>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MethamphetamineHigh</hediffDef>
          <severity>1.00</severity>
          <toleranceChemical>Methamphetamine</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>MethamphetamineTolerance</hediffDef>
          <severity>0.040</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>DrugProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <PsychoidLeaves>10</PsychoidLeaves>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Methamphetamine</chemical>
        <addictiveness>0.80</addictiveness>
        <minToleranceToAddict>0.00</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.30</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>890</listOrder>
        <overdoseSeverityOffset>
          <min>0.18</min>
          <max>0.35</max>
        </overdoseSeverityOffset>
				<largeOverdoseChance>0.020</largeOverdoseChance>
			</li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>MethamphetamineHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>methamphetamine</label>
    <labelNoun>a methamphetamine high</labelNoun>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2.0</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <offset>1.00</offset>
            </li>
            <li>
              <capacity>Manipulation</capacity>
              <offset>0.50</offset>
            </li>
          </capMods>
          <hediffGivers>
            <li Class="HediffGiver_Random">
              <hediff>HeartAttack</hediff>
              <mtbDays>50</mtbDays>
              <partsToAffect>
                <li>Heart</li>
              </partsToAffect>
            </li>
          </hediffGivers>
		  </li>
      </stages>
  </HediffDef>
  
   <ThoughtDef>
    <defName>MethamphetamineHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MethamphetamineHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on methamphetamine</label>
        <description>I feel alive!</description>
        <baseMoodEffect>30</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

 <ChemicalDef>
    <defName>Methamphetamine</defName>
    <label>methamphetamine</label>
    <addictionHediff>MethamphetamineAddiction</addictionHediff>
    <toleranceHediff>MethamphetamineTolerance</toleranceHediff>
		<onGeneratedAddictedToleranceChance>0.6</onGeneratedAddictedToleranceChance>
	</ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Methamphetamine</defName>
    <needClass>Need_Chemical</needClass>
    <label>methamphetamine</label>
    <description>Because of a methamphetamine addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>40</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>MethamphetamineTolerance</defName>
    <label>methamphetamine tolerance</label>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.016</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Methamphetamine</chemical>
      </li>
    </comps>
		<hediffGivers>
			<li Class="HediffGiver_RandomDrugEffect">
				<hediff>ChemicalDamageSevere</hediff>
				<minSeverity>0.30</minSeverity>
				<baseMtbDays>50</baseMtbDays>
				<partsToAffect>
					<li>Kidney</li>
					<li>Heart</li>
					<li>Brain</li>
				</partsToAffect>
			</li>
		</hediffGivers>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>MethamphetamineAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>methamphetamine addiction</label>
    <causesNeed>Chemical_Methamphetamine</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.0333</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
		<restFallFactorOffset>0.3</restFallFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.50</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
        <mentalStateGivers>
					<li>
						<mentalState>Binging_DrugExtreme</mentalState>
						<mtbDays>30</mtbDays>
					</li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>10</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>MethamphetamineWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MethamphetamineAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>methamphetamine withdrawal</label>
        <description>I need more meth. I feel dead.</description>
        <baseMoodEffect>-40</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>