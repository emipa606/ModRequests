<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>SpaceLubeDrug</defName>
    <label>space lube</label>
    <description>A clown's best friend.</description>
    <descriptionHyperlinks><HediffDef>SpaceLubeHigh</HediffDef></descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/spacelubepill</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>300</WorkToMake>
      <MarketValue>14</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Hard</drugCategory>
      <foodType>Processed</foodType>
      <joyKind>Chemical</joyKind>
      <joy>0.70</joy>
	        <nurseable>true</nurseable>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>SpaceLubeHigh</hediffDef>
          <severity>1.00</severity>
          <toleranceChemical>SpaceLube</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>SpaceLubeTolerance</hediffDef>
          <severity>0.040</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>DrugProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <PsychoidLeaves>4</PsychoidLeaves>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>SpaceLube</chemical>
        <addictiveness>0.01</addictiveness>
        <minToleranceToAddict>0.00</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.30</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>890</listOrder>
        <overdoseSeverityOffset>
          <min>0.18</min>
          <max>0.35</max>
        </overdoseSeverityOffset>
				<largeOverdoseChance>0.015</largeOverdoseChance>
			</li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>SpaceLubeHigh</defName>
	<description>why</description>
    <hediffClass>HediffWithComps</hediffClass>
    <label>space lube</label>
    <labelNoun>a space lube high</labelNoun>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2.0</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
        <vomitMtbDays>0.1</vomitMtbDays>
          <capMods>
            <li>
              <capacity>Manipulation</capacity>
              <offset>-0.10</offset>
            </li>
          </capMods>
        </li>
      </stages>
  </HediffDef>
  
   <ThoughtDef>
    <defName>SpaceLubeHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>SpaceLubeHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on space lube</label>
        <description>Hmm clown juice.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

 <ChemicalDef>
    <defName>SpaceLube</defName>
    <label>space lube</label>
    <addictionHediff>SpaceLubeAddiction</addictionHediff>
    <toleranceHediff>SpaceLubeTolerance</toleranceHediff>
		<onGeneratedAddictedToleranceChance>0.6</onGeneratedAddictedToleranceChance>
	</ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_SpaceLube</defName>
    <needClass>Need_Chemical</needClass>
    <label>space lube</label>
    <description>Because of a space lube addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>40</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>SpaceLubeTolerance</defName>
    <label>space lube tolerance</label>
    <description>gimme more of that loob pls</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.016</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>SpaceLube</chemical>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>SpaceLubeAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <description>yeeee boi</description>
    <label>space lube addiction</label>
    <causesNeed>Chemical_SpaceLube</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.0333</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
        <mentalStateGivers>
					<li>
						<mentalState>Binging_DrugMajor</mentalState>
						<mtbDays>40</mtbDays>
					</li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>SpaceLubeWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>SpaceLubeAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>space lube withdrawal</label>
        <description>I need more lube.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>