<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>JenkemDrug</defName>
    <label>jenkem</label>
    <description>Jenkem is a prison drug made from organic waste. Extremely disgusting.</description>
    <descriptionHyperlinks><HediffDef>JenkemHigh</HediffDef></descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/jenkempill</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>300</WorkToMake>
      <MarketValue>8</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Hard</drugCategory>
      <foodType>Processed</foodType>
      <joyKind>Chemical</joyKind>
      <joy>0.50</joy>
	        <nurseable>true</nurseable>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>JenkemHigh</hediffDef>
          <severity>1.00</severity>
          <toleranceChemical>Jenkem</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>JenkemTolerance</hediffDef>
          <severity>0.030</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>DrugProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <PsychoidLeaves>2</PsychoidLeaves>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Jenkem</chemical>
        <addictiveness>0.05</addictiveness>
        <minToleranceToAddict>0.01</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.30</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>890</listOrder>
        <overdoseSeverityOffset>
          <min>0.18</min>
          <max>0.35</max>
        </overdoseSeverityOffset>
				<largeOverdoseChance>0.005</largeOverdoseChance>
			</li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>JenkemHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>jenkem</label>
    <description>WHATS ON THE MENU CHEF? we uhh got some burned mess and another burn- OFF WITH HIS HEAD</description>
    <labelNoun>a jenkem high</labelNoun>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.5</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.05</offset>
            </li>
          </capMods>
        </li>
      </stages>
  </HediffDef>
  
   <ThoughtDef>
    <defName>JenkemHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>JenkemHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on jenkem</label>
        <description>Good stuff.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

 <ChemicalDef>
    <defName>Jenkem</defName>
    <label>jenkem</label>
    <addictionHediff>JenkemAddiction</addictionHediff>
    <toleranceHediff>JenkemTolerance</toleranceHediff>
		<onGeneratedAddictedToleranceChance>0.6</onGeneratedAddictedToleranceChance>
	</ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Jenkem</defName>
    <needClass>Need_Chemical</needClass>
    <label>jenkem</label>
    <description>Because of a jenkem addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>40</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>JenkemTolerance</defName>
    <label>jenkem tolerance</label>
    <description>don't feel like sniffing sewage anymore eh?</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.016</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Jenkem</chemical>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>JenkemAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>jenkem addiction</label>
    <description>bruh</description>
    <causesNeed>Chemical_Jenkem</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.0333</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
		<restFallFactorOffset>0.3</restFallFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
        <mentalStateGivers>
					<li>
						<mentalState>Binging_DrugMajor</mentalState>
						<mtbDays>40</mtbDays>
					</li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>JenkemWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>JenkemAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>jenkem withdrawal</label>
        <description>I need more drugs.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>