<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>CrankDrug</defName>
    <label>crank</label>
    <description>An addictive drug which can cause brain damage.</description>
    <descriptionHyperlinks><HediffDef>CrankHigh</HediffDef></descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/crankpill</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>400</WorkToMake>
      <MarketValue>22</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Hard</drugCategory>
      <foodType>Processed</foodType>
      <joyKind>Chemical</joyKind>
      <joy>0.70</joy>
	        <nurseable>true</nurseable>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>CrankHigh</hediffDef>
          <severity>1.00</severity>
          <toleranceChemical>Crank</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>CrankTolerance</hediffDef>
          <severity>0.030</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>DrugProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <PsychoidLeaves>8</PsychoidLeaves>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Crank</chemical>
        <addictiveness>0.40</addictiveness>
        <minToleranceToAddict>0.00</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.30</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>890</listOrder>
        <overdoseSeverityOffset>
          <min>0.18</min>
          <max>0.35</max>
        </overdoseSeverityOffset>
				<largeOverdoseChance>0.020</largeOverdoseChance>
			</li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>CrankHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>crank</label>
<description>did your chemheater explode?</description>
    <labelNoun>a crank high</labelNoun>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2.0</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <painFactor>0.5</painFactor>
		  </li>
      </stages>
  </HediffDef>
  
   <ThoughtDef>
    <defName>CrankHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>CrankHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on crank</label>
        <description>Woo!!</description>
        <baseMoodEffect>40</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

 <ChemicalDef>
    <defName>Crank</defName>
    <label>crank</label>
    <addictionHediff>CrankAddiction</addictionHediff>
    <toleranceHediff>CrankTolerance</toleranceHediff>
		<onGeneratedAddictedToleranceChance>0.6</onGeneratedAddictedToleranceChance>
	</ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Crank</defName>
    <needClass>Need_Chemical</needClass>
    <label>crank</label>
    <description>Because of a crank addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>40</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>CrankTolerance</defName>
    <label>crank tolerance</label>
<description>crank crank crank cranky kong</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.016</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Crank</chemical>
      </li>
    </comps>
		<hediffGivers>
			<li Class="HediffGiver_RandomDrugEffect">
				<hediff>ChemicalDamageSevere</hediff>
				<minSeverity>0.30</minSeverity>
				<baseMtbDays>100</baseMtbDays>
				<partsToAffect>
					<li>Brain</li>
				</partsToAffect>
			</li>
		</hediffGivers>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>CrankAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>crank addiction</label>
<description>boi</description>
    <causesNeed>Chemical_Crank</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.0333</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
		<restFallFactorOffset>0.3</restFallFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
        <mentalStateGivers>
					<li>
						<mentalState>Binging_DrugExtreme</mentalState>
						<mtbDays>30</mtbDays>
					</li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>10</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>CrankWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>CrankAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>crank withdrawal</label>
        <description>I feel very tired and exhausted.</description>
        <baseMoodEffect>-30</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>