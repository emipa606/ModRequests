<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>StrangereagentDrug</defName>
    <label>strange reagent</label>
    <description>Brings dead people back to life. Does not work on spooky skeleton men. Poisonous to living things.</description>
    <descriptionHyperlinks><HediffDef>SalbutamolHigh</HediffDef></descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/strangereagentpill</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>10</MarketValue>
      <Mass>0.005</Mass>
      <Flammability>0.7</Flammability>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>ToxicBuildup</hediffDef>
          <severity>0.1</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>DrugProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>10</Neutroamine>
      <Luciferium>10</Luciferium>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>
          <min>0.08</min>
          <max>0.14</max>
        </overdoseSeverityOffset>
      </li>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use strange reagent</useLabel>
        <useDuration>0</useDuration>
      </li>
      <li Class="CompProperties_Targetable">
        <compClass>CompTargetable_SingleCorpse</compClass>
        <fleshCorpsesOnly>true</fleshCorpsesOnly>
        <nonDessicatedCorpsesOnly>true</nonDessicatedCorpsesOnly>
      </li>
      <li>
        <compClass>CompTargetEffect_Resurrect</compClass>
      </li>
    </comps>
  </ThingDef>
  
</Defs>