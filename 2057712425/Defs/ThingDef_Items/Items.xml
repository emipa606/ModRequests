<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Abstract="True" Name="zot_resource_base" ParentName="ResourceBase">
    <description>resource.</description>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <DeteriorationRate>2</DeteriorationRate>
      <Mass>0.03</Mass>
      <Flammability>0.2</Flammability>
      <MarketValue>4</MarketValue>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <stuffProps>
      <commonality>0.025</commonality>
      <statFactors>
        <MaxHitPoints>1.3</MaxHitPoints>
      </statFactors>
    </stuffProps>
  </ThingDef>

  <ThingDef ParentName="zot_resource_base">
    <defName>MarroFlesh</defName>
    <label>marroflesh</label>
    <description>Flesh grown by Marro. Can be used to produce many things.</description>
    <graphicData>
      <texPath>Things/Item/Resource/MarroFlesh</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>6</MarketValue>
    </statBases>
    <stuffProps>
      <commonality>0.05</commonality>
      <statFactors>
        <Beauty>.1</Beauty>
      </statFactors>
		<categories>
			<li>Marroflesh</li>
		</categories>
    </stuffProps>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
  </ThingDef>
  
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>MarroShroom</defName>
    <label>raw MarroShroom</label>
    <description>Raw fungus.</description>
    <graphicData>
      <texPath>Things/Plant/Marroshroom/MarroshroomItem</texPath>
    </graphicData>
    <statBases>
      <MarketValue>2</MarketValue>
    </statBases>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>24</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
</Defs>