<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="CavePlantBase">
    <defName>Plant_MarroFlesh</defName>
    <label>marroflesh fungi</label>
    <description>This Mushroom looks very similar to the Marro. It is grown to be refined into many things.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/MarroFlesh</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible/>
    <plant>	  
      <growDays>7</growDays>
      <sowWork>450</sowWork>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>MarroFlesh</harvestedThingDef>
      <harvestYield>2</harvestYield>
      <neverBlightable>true</neverBlightable>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowMinSkill>4</sowMinSkill>
      <sowResearchPrerequisites>
	 	<li>MarroMushrooms</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>

  </ThingDef>
  
  <ThingDef ParentName="CavePlantBase">
    <defName>Marrotree</defName>
    <label>Marroflesh tree</label>
    <description>An enormous marroflesh plant, adapted to grow longer but create more marroflesh.</description>
    <graphicData>
      <texPath>Things/Plant/Marrotree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
	<selectable>true</selectable>
    <statBases>
	  <MaxHitPoints>120</MaxHitPoints>
      <Nutrition>0.5</Nutrition>
    </statBases>
	 <pathCost>50</pathCost>
    <plant>
	  <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowResearchPrerequisites>
	 	<li>MarroMushrooms</li>
      </sowResearchPrerequisites>
      <growDays>35</growDays>
	  <neverBlightable>true</neverBlightable>
	  <sowWork>800</sowWork>
	  <harvestTag>Standard</harvestTag>
	  <harvestedThingDef>MarroFlesh</harvestedThingDef>
