<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <PipeSystem.PipeNetDef>
    <defName>UCE_NeutroamineNet</defName>
    <resource>
      <name>Neutroamine</name>
      <unit>l</unit>
      <color>(0.37, 0.64, 0.67)</color>
      <onlyShowStored>True</onlyShowStored>
      <offTexPath>Building/NeutroNet/OutOfNeutroamine</offTexPath>
    </resource>
    <pipeDefs>
      <li>UCE_NeutroaminePipe</li>
      <li>UCE_UndergroundNeutroaminePipe</li>
    </pipeDefs>
    <designator>
      <deconstructIconPath>Building/NeutroNet/NeutroaminePipes_Deconstruct</deconstructIconPath>
      <designationCategoryDef>VCHE_PipeNetworks</designationCategoryDef>
    </designator>
    <overlayOptions>
      <overlayColor>(0.37, 0.64, 0.67)</overlayColor>
    </overlayOptions>
  </PipeSystem.PipeNetDef>

  <ThingDef ParentName="BuildingBase">
    <defName>UCE_NeutroaminePipe</defName>
    <label>neutroamine pipe</label>
    <description>Steel pipes for transporting neutroamine from distillery to refineries or tanks.</description>
    <thingClass>PipeSystem.Building_Pipe</thingClass>
    <category>Building</category>
    <tickerType>Rare</tickerType>
    <graphicData>
      <texPath>Building/NeutroNet/NeutroaminePipes_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom8</li>
      </linkFlags>
      <damageData>
        <rect>(0,0.35,1,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Building/NeutroNet/NeutroaminePipes_MenuIcon</uiIconPath>
    <uiIconScale>0.7</uiIconScale>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
      <blueprintGraphicData>
        <texPath>Building/NeutroNet/NeutroaminePipes_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <drawerType>MapMeshOnly</drawerType>
    <altitudeLayer>Conduits</altitudeLayer>
    <passability>Standable</passability>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <statBases>
      <MaxHitPoints>10</MaxHitPoints>
      <WorkToBuild>10</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <costList>
      <Steel>2</Steel>
    </costList>
    <comps>
      <li Class="PipeSystem.CompProperties_Resource">
        <pipeNet>UCE_NeutroamineNet</pipeNet>
      </li>
    </comps>
    <placeWorkers>
      <li>PipeSystem.PlaceWorker_Pipe</li>
    </placeWorkers>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>VCHE_PipeNetworks</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <clearBuildingArea>false</clearBuildingArea>
    <researchPrerequisites>
      <li>UCE_NeutroDistilling</li>
    </researchPrerequisites>
  </ThingDef>

