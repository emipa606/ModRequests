  <ThingDef ParentName="BuildingBase">
    <defName>UCE_NeutroamineTank</defName>
    <label>neutroamine tank</label>
    <description>Light tank for storing neutroamine inside it.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Building/NeutroNet/NeutroamineTank</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2.2,2.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <pathCost>50</pathCost>
    <rotatable>false</rotatable>
    <blockWind>false</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.40</fillPercent>
    <tickerType>Normal</tickerType>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>200</WorkToBuild>
      <Mass>10</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(2,2)</size>
    <costList>
      <Steel>80</Steel>
    </costList>
    <comps>
      <li Class="PipeSystem.CompProperties_ResourceStorage">
        <pipeNet>UCE_NeutroamineNet</pipeNet>
        <storageCapacity>1200</storageCapacity>
        <barSize>(0.25, 0.5)</barSize>
        <margin>0.1</margin>
        <centerOffset>(0, 0, -0.7)</centerOffset>
        <extractOptions>
          <texPath>Building/NeutroNet/ExtractNeutroamine</texPath>
          <labelKey>UCE_ExtraxtNeutroamine</labelKey>
          <descKey>UCE_ExtractNeutroamineDesc</descKey>
          <extractAmount>150</extractAmount>
          <thing>Neutroamine</thing>
          <ratio>1</ratio>
        </extractOptions>
      </li>
    </comps>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>VCHE_PipeNetworks</designationCategory>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <constructEffect>ConstructMetal</constructEffect>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>UCE_NeutroDistilling</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="FurnitureBase">
    <defName>UCE_NeutroamineTap</defName>
    <label>neutroamine tap</label>
    <description>A hopper-like storage basin meant to hold dispensed neutroamine from tanks periodically for use later.</description>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
			<texPath>Building/NeutroNet/NeutroamineTap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
			<drawRotated>false</drawRotated>
			<allowFlip>false</allowFlip>
		</graphicData>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>1</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>50</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>8</Mass>
      <WorkToBuild>400</WorkToBuild>
      <Flammability>0.0</Flammability>
      <Beauty>0.5</Beauty>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Steel>60</Steel>
    </costList>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <fixedStorageSettings>
        <filter>
          <disallowNotEverStorable>true</disallowNotEverStorable>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <disallowNotEverStorable>true</disallowNotEverStorable>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationCategory>VCHE_PipeNetworks</designationCategory>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <comps>
      <li Class="PipeSystem.CompProperties_ConvertResourceToThing">
        <pipeNet>UCE_NeutroamineNet</pipeNet>
        <thing>Neutroamine</thing>
      </li>
    </comps>
    <researchPrerequisites>
      <li>UCE_NeutroDistilling</li>
    </researchPrerequisites>
  </ThingDef>

