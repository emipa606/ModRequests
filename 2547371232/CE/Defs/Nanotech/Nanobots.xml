<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>NT_Nanobots</defName>
    <label>nanobots</label>
    <description>A pack containing extremely versatile nanobots that can turn into any matter.</description>
    <graphicData>
      <texPath>Things/Item/Resource/NT_Nanobots</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
      <generateCommonality>0</generateCommonality>
      <generateAllowChance>0</generateAllowChance>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
        <statBases>
            <MaxHitPoints>2000</MaxHitPoints>
            <MarketValue>10</MarketValue>
            <Mass>0.01</Mass>
            <Flammability>0</Flammability>
            <DeteriorationRate>0</DeteriorationRate>
            <StuffPower_Insulation_Cold>500</StuffPower_Insulation_Cold>
            <StuffPower_Insulation_Heat>500</StuffPower_Insulation_Heat>
        </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>0</deepCommonality>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <stuffProps>
      <categories>
        <li>Metallic</li>
		<li>Woody</li>
		<li>Stony</li>
		<li>Leathery</li>
		<li>Fabric</li>
		<li>Steeled</li>
		<li>Metallic_Weapon</li>
      </categories>
	  <commonality>0</commonality>
      <stuffAdjective>nanotech</stuffAdjective>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(40,40,40)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
            <statFactors>
                <MaxHitPoints>40.0</MaxHitPoints>
                <Beauty>128</Beauty>
                <Flammability>0</Flammability>
                <SocialImpact>1.5</SocialImpact>
                
                <WorkToMake>0.1</WorkToMake>
                <WorkToBuild>0.1</WorkToBuild>
                <BedRestEffectiveness>15.0</BedRestEffectiveness>
                <DoorOpenSpeed>3.0</DoorOpenSpeed>
                <MedicalPotency>2.0</MedicalPotency>
                
                <ArmorRating_Blunt>3.0</ArmorRating_Blunt>
                <ArmorRating_Sharp>3</ArmorRating_Sharp>
                <ArmorRating_Heat>3</ArmorRating_Heat>
                <StuffPower_Insulation_Cold>60</StuffPower_Insulation_Cold>
                <StuffPower_Insulation_Heat>750</StuffPower_Insulation_Heat>
                
                <MeleeWeapon_CooldownMultiplier>0.1</MeleeWeapon_CooldownMultiplier>
                <MeleeArmorPenetration>2.5</MeleeArmorPenetration>
                <MeleeDPS>2</MeleeDPS>
                
                <AccuracyTouch>2.0</AccuracyTouch>
                <AccuracyShort>2.0</AccuracyShort>
                <AccuracyMedium>2.0</AccuracyMedium>
                <AccuracyLong>2.0</AccuracyLong>
                <ShootingAccuracyPawn>1.2</ShootingAccuracyPawn>
                <RangedWeapon_Cooldown>0.3</RangedWeapon_Cooldown>
            </statFactors>
            <statOffsets>
                <MaxHitPoints>10.0</MaxHitPoints>
                <Beauty>128</Beauty>
                
                <ArmorRating_Blunt>300</ArmorRating_Blunt>
                <ArmorRating_Sharp>300</ArmorRating_Sharp>
                <ArmorRating_Heat>300</ArmorRating_Heat>
            
                <StuffPower_Armor_Sharp>3</StuffPower_Armor_Sharp>
                <StuffPower_Armor_Blunt>300</StuffPower_Armor_Blunt>
                <StuffPower_Armor_Heat>300</StuffPower_Armor_Heat>
                <StuffPower_Insulation_Cold>300</StuffPower_Insulation_Cold>
                <StuffPower_Insulation_Heat>500</StuffPower_Insulation_Heat>
            
                <SharpDamageMultiplier>5</SharpDamageMultiplier>
                <BluntDamageMultiplier>5</BluntDamageMultiplier>
            
                <Comfort>100</Comfort>
                <ImmunityGainSpeedFactor>1.00</ImmunityGainSpeedFactor>
                <ResearchSpeedFactor>2.00</ResearchSpeedFactor>
                <BedRestEffectiveness>1.50</BedRestEffectiveness>
            </statOffsets>
    </stuffProps>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
	<modExtensions>
		<li Class="VFECore.StuffExtension">		
			<structureGenerationCommonalityOffset>-100</structureGenerationCommonalityOffset>
			<weaponGenerationCommonalityOffset>-100</weaponGenerationCommonalityOffset>
			<apparelGenerationCommonalityOffset>-100</apparelGenerationCommonalityOffset>
			
			<structureGenerationCommonalityFactor>0</structureGenerationCommonalityFactor>
			<weaponGenerationCommonalityFactor>0</weaponGenerationCommonalityFactor>
			<apparelGenerationCommonalityFactor>0</apparelGenerationCommonalityFactor>
		</li>
	</modExtensions>
  </ThingDef>

<!-- Also Nanofood -->

  <ThingDef ParentName="PlantFoodRawBase">
    <defName>Nanorice</defName>
    <label>Nanoberries</label>
    <description>Some delicious synthetic berries, rich in protein. Can be eaten raw, and doesn't rot.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Nanorice</texPath>
    </graphicData>
    <statBases>
      <MarketValue>5</MarketValue>
    </statBases>
    <ingestible>
      <preferability>RawTasty</preferability>
      <tasteThought></tasteThought>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>

</Defs>