<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TerrainDef>
    <defName>Nanotile</defName>
    <label>nanotile</label>
    <renderPrecedence>240</renderPrecedence>
    <description>Walking tiles made of nanobots. Extremely beautiful and pristine.</description>
    <color>(40,40,40)</color>
    <texturePath>Terrain/Surfaces/GenericFloorTile</texturePath>
    <constructEffect>ConstructMetal</constructEffect>
    <statBases>
      <WorkToBuild>10</WorkToBuild>
      <Beauty>500</Beauty>
      <Cleanliness>2</Cleanliness>
    </statBases>
    <costList>
      <NT_Nanobots>1</NT_Nanobots>
    </costList>
    <layerable>true</layerable>
	<isPaintable>true</isPaintable>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
    </affordances>
    <tags>
      <li>Floor</li>
	  <li>FineFloor</li>
    </tags>
    <designationCategory>Floors</designationCategory>
    <fertility>0</fertility>
  </TerrainDef>
  
  <TerrainDef ParentName="NaturalTerrainBase">
    <defName>Nanosoil</defName>
    <label>nanosoil</label>
    <texturePath>Terrain/Surfaces/SoilRich</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>70</renderPrecedence>
	<layerable>true</layerable>
    <pathCost>1</pathCost>
    <statBases>
	  <WorkToBuild>50</WorkToBuild>
      <Beauty>1</Beauty>
      <Cleanliness>0</Cleanliness>
    </statBases>
    <scatterType>Rocky</scatterType>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
	  <li>Diggable</li>
    </affordances>
    <fertility>100.0</fertility>
    <!--tags>
      <li>Floor</li>
    </tags-->
    <designationCategory>Floors</designationCategory>
    <tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  <constructEffect>ConstructDirt</constructEffect>
  </TerrainDef>

</Defs>