	<ThingDef ParentName="MakeableShellBase">
    <defName>GLO_Shell_EMP</defName>
    <label>glowstone EMP shell</label>
    <description>A shell filled with batteries and glowstone dust, for generating a weak EMP pulse and lighting up an area for a short period of time when detonated. Electromagnetic pulses temporarily disable electrical circuits. Can be fired from mortars or installed as a trap. Explodes when damaged.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Shell/Shell_EMP</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>8.5</explosiveRadius>
        <explosiveDamageType>GLO_DustEMP</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>10</min>
          <max>30</max>
        </wickTicks>
        <preExplosionSpawnThingDef>GLO_FilthDust</preExplosionSpawnThingDef>
        <preExplosionSpawnChance>0.25</preExplosionSpawnChance>
      </li>
    </comps>
    <projectileWhenLoaded>GLO_Bullet_Shell_EMP</projectileWhenLoaded>
    <costList>
      <Steel>5</Steel>
			<GLO_GlowstoneDust>15</GLO_GlowstoneDust>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>GLO_Bullet_Shell_EMP</defName>
    <label>glowstone EMP shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellEMP</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>GLO_DustEMP</damageDef>
      <damageAmountBase>280</damageAmountBase>
      <speed>41</speed>
      <explosionRadius>8.5</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>Explosion_EMP</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
			<preExplosionSpawnThingDef>GLO_FilthDust</preExplosionSpawnThingDef>
			<preExplosionSpawnChance>0.25</preExplosionSpawnChance>
    </projectile>
