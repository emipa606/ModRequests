<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Replaces Vanilla recipes with VGP recipes -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAttributeSet">
					<xpath>/Defs/ThingDefs_Buildings[defName="TableAdvancedElectricStove"]/recipes</xpath>
					<attribute>CookMealSimpleBulk</attribute>
					<value>CookMealSimple_Bulk</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAttributeSet">
					<xpath>/Defs/ThingDefs_Buildings[defName="TableAdvancedElectricStove"]/recipes</xpath>
					<attribute>CookMealFineBulk</attribute>
					<value>CookMealFine_Bulk</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAttributeSet">
					<xpath>/Defs/ThingDefs_Buildings[defName="TableAdvancedElectricStove"]/recipes</xpath>
					<attribute>CookMealLavishBulk</attribute>
					<value>CookMealLavish_Bulk</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAttributeSet">
					<xpath>/Defs/ThingDefs_Buildings[defName="TableAdvancedElectricStove"]/recipes</xpath>
					<attribute>CookMealSurvivalBulk</attribute>
					<value>CookBulkMealSurvival</value>
				</li>
			</operations>
		</match>
	</Operation>

	<!-- Adds in new recipes  -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="Stirfrymeal"]/recipeUsers</xpath>
					<value>
						<li>TableAdvancedElectricStove</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="Cookstewpot"]/recipeUsers</xpath>
					<value>
						<li>TableAdvancedElectricStove</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="TableAdvancedElectricStove"]/recipeUsers</xpath>
					<value>
						<li>TableAdvancedElectricStove</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	
</Patch>