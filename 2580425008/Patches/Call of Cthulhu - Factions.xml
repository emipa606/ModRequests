<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call of Cthulhu - Factions</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="ROM_Gun_TommyGun"]/weaponTags</xpath>
					<value>
					          <li>Mafia_fusil</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="ROM_Apparel_CallOfCthulhutrench_coat" or defName="ROM_Apparel_CallOfCthulhuShirtTie"]/apparel/tags</xpath>
					<value>
					          <li>mafia</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="ROM_Apparel_CallOfCthulhuTopHat" or defName="ROM_Apparel_CallOfCthulhuNewsboyCap" or defName="ROM_Apparel_CallOfCthulhuFedora" or defName="ROM_Apparel_CallOfCthulhuBowler"]/apparel/tags</xpath>
					<value>
					          <li>mafia_tete</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>