<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Apparel Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="VAE_Apparel_Jumpsuit"]/apparel/tags</xpath>
					<value>
					          <li>mafia_survetement</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="VAE_Apparel_Trousers" or defName="VAE_Apparel_ShirtandTie"]/apparel/tags</xpath>
					<value>
					          <li>mafia</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="VAE_Headgear_Fedora"]/apparel/tags</xpath>
					<value>
					          <li>mafia_tete</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
				      <xpath>/Defs/PawnKindDef[defName="Mafia_trader"]/apparelRequired</xpath>
				      <value>
				      <li>VAE_Apparel_ShirtandTie</li>
				      <li>VAE_Apparel_Trousers</li>
				      <li>VAE_Footwear_Shoes</li>
				      </value>
				</li>
				<li Class="PatchOperationAdd"> 
				      <xpath>/Defs/PawnKindDef[defName="Mafia_leader"]/apparelRequired</xpath>
				      <value>
				      <li>VAE_Apparel_ShirtandTie</li>
				      <li>VAE_Apparel_SuitJacket</li>
				      <li>VAE_Apparel_Trousers</li>
				      <li>VAE_Footwear_Shoes</li>
				      </value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>