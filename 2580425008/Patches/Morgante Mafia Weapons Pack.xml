<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Morgante Mafia Weapons Pack</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="Morg_BoltActionRifle"]</xpath>
					<value>
					    <weaponTags>
					      <li>Mafia_fusil</li>
					    </weaponTags>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="Morg_Lupara" or defName="Morg_PumpShotgun"]</xpath>
					<value>
					    <weaponTags>
					      <li>Mafia_Pompe</li>
					    </weaponTags>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="Morg_TommyGun"]/weaponTags</xpath>
					<value>
					          <li>Mafia_fusil</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					     <xpath>/Defs/ThingDef[defName="Bullet_PoketRevolver" or defName="Morg_ServiceRevolver" or defName="Morg_M1911a"]/weaponTags</xpath>
					<value>
					          <li>Mafia_Gun</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>