<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <ThingDef ParentName="ApparelBase">
    <defName>survetement</defName>
    <label>ensemble de survêtement</label>
    <description>Un ensemble de survêtements souples.</description>
    <graphicData>
      <texPath>Apparel/Survetement1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
	<thingCategories>
	<li>Apparel</li>
	</thingCategories>
    <statBases>
	<MaxHitPoints>100</MaxHitPoints>
	<WorkToMake>6000</WorkToMake>
      <Mass>0.35</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.2</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
	<apparel>
	<bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
	<li>Shoulders</li>
        <li>Arms</li>
	<li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Survetement</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>mafia_survetement</li>
        <li>anarchiste</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
   <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

   <ThingDef ParentName="HatBase">
    <defName>Bonnet_mafieux</defName>
    <label>Bonnet mafieux</label>
    <description>Bonnet porté habituellement par les hommes de mains de la mafia.</description>
    <graphicData>
      <texPath>Apparel/Bonnet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.07</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
	<generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Bonnet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
       <li>mafia_bonnet</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
  </ThingDef>
  
</Defs>