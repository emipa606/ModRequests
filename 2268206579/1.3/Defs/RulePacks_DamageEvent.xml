<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RulePackDef>
		<defName>DamageEvent_Toxic_AE</defName>
		<include>
			<li>DamageEvent_Include</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>damage_source->[toxin] contaminated</li>

				<li>toxin(p=3)->toxin</li>
				<li>toxin(p=3)->a toxin</li>
				<li>toxin(p=3)->the toxin</li>
				<li>toxin->blight</li>
				<li>toxin->a poison</li>
				<li>toxin->a contagion</li>

				<li>damaged_present(p=2)->poisoning</li>
				<li>damaged_present(p=2)->afflicting</li>
				<li>damaged_present(p=2)->infecting</li>
				<li>damaged_present(p=2)->contaminating</li>
				<li>damaged_present(p=2)->tainting</li>
				<li>damaged_present(p=2)->strickening</li>

				<li>destroyed_present->decaying</li>
				<li>destroyed_present->necrotizing</li>
				<li>destroyed_present->rotting</li>
				<li>destroyed_present->perishing</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
  
	<RulePackDef>
		<defName>DamageEvent_Corrosive_AE</defName>
		<include>
			<li>DamageEvent_Include</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>damage_source->[acid] splashed</li>

				<li>acid(p=3)->acid</li>
				<li>acid(p=3)->an acid puddle</li>
				<li>acid(p=3)->the acid</li>
				<li>acid->corrosive agent</li>
				<li>acid->an oxidizing agent</li>

				<li>damaged_present(p=2)->tarnishing</li>
				<li>damaged_present(p=2)->burning</li>
				<li>damaged_present(p=2)->eroding</li>

				<li>destroyed_present->disintergrating</li>
				<li>destroyed_present->dissolving</li>
				<li>destroyed_present->liquifying</li>
				<li>destroyed_present->perishing</li>
				<li>destroyed_present->consuming</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

</Defs>
