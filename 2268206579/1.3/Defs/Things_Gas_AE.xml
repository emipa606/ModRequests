<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="ToxicGasAE">
		<thingClass>AltherianExport.Gas_Toxic_AE</thingClass>  
		<defName>Gas_Toxic_AE</defName>
		<label>toxic mist</label>
		<category>Gas</category>
		<altitudeLayer>Gas</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<tickerType>Normal</tickerType>
		
		<graphicData>
		  <texPath>Mote/PlasmaMote</texPath>
		  <drawSize>2.2</drawSize>
		  <color>(1.0, 1.0, 1.0, 0.60)</color>
		  <graphicClass>Graphic_Gas</graphicClass>
		  <shaderType>Transparent</shaderType>
		</graphicData>
		
		<gas>
		  <expireSeconds>29~31</expireSeconds>
		  <blockTurretTracking>true</blockTurretTracking>
		  <accuracyPenalty>0</accuracyPenalty>
		  <rotationSpeed>40</rotationSpeed>
		</gas>
	</ThingDef>
	
	<ThingDef Name="CorrosiveGasAE">
		<thingClass>AltherianExport.Gas_Corrosive_AE</thingClass>  
		<defName>Gas_Corrosive_AE</defName>
		<label>corrosive pool</label>
		<category>Gas</category>
		<altitudeLayer>Filth</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<tickerType>Normal</tickerType>
		<drawerType>MapMeshOnly</drawerType>
		
		<graphicData>
		  <texPath>Mote/AcidMote</texPath>
		  <drawSize>1</drawSize>
		  <color>(1.0, 1.0, 1.0, 1)</color>
		  <graphicClass>Graphic_Gas</graphicClass>
		  <shaderType>Transparent</shaderType>
		</graphicData>
		
		<gas>
		  <expireSeconds>29~31</expireSeconds>
		  <blockTurretTracking>false</blockTurretTracking>
		  <accuracyPenalty>0</accuracyPenalty>
		  <rotationSpeed>0</rotationSpeed>
		</gas>
	</ThingDef>	
	
</Defs>
