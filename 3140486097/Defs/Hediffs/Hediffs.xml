<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>QE_WarTrance</defName>
		<label>war trance</label>
		<makesSickThought>false</makesSickThought>
		<description>This pawn is in a war trance.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<hediffClass>Hediff_High</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
		  <li Class="HediffCompProperties_SeverityPerDay">
			<severityPerDay>-0.2</severityPerDay>
			<showHoursToRecover>true</showHoursToRecover>
		  </li>
		</comps>
		<stages>
			<li>   
			  <hungerRateFactor>0.0</hungerRateFactor>
			  <painFactor>0.2</painFactor>
			  <capMods>
				<li>
				  <capacity>Consciousness</capacity>
				  <offset>1.5</offset>
				</li>
				<li>
				  <capacity>Sight</capacity>
				  <offset>1.5</offset>
				</li>
				<li>
				  <capacity>Moving</capacity>
				  <offset>1.50</offset>
				</li>
			  </capMods>
			  <statFactors>
				<RestFallRateFactor>0.25</RestFallRateFactor>
			  </statFactors>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>QE_CombatReadiness</defName>
		<label>Combat Ready</label>
		<makesSickThought>false</makesSickThought>
		<description>This pawn is combat ready.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<hediffClass>Hediff_High</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
		  <li Class="HediffCompProperties_SeverityPerDay">
			<severityPerDay>-0.2</severityPerDay>
			<showHoursToRecover>true</showHoursToRecover>
		  </li>
		</comps>
		<stages>
			<li>   
			  <hungerRateFactor>0.0</hungerRateFactor>
			</li>
		</stages>
	</HediffDef>
</Defs>