<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>ClearMind</defName>
    <label>clear mind</label>
    <description>Meditation effect !</description>
	<hediffClass>ImprovedMeditation.Hediff_ClearMind</hediffClass>
    <comps>
      <li Class="ImprovedMeditation.HediffCompProperties_Meditation">
        <growthPerDayMeditating>20</growthPerDayMeditating>
        <declinePerDay>4.5</declinePerDay>
        <changePerDaySkillFactor>1.5</changePerDaySkillFactor>
        <startMeditationUpScaleFactor>1.42</startMeditationUpScaleFactor>
        <endMeditationDownScaleFactor>0.7</endMeditationDownScaleFactor>
      </li>
    </comps>
    <defaultLabelColor>(0.69, 0.12, 0.90)</defaultLabelColor>
    <initialSeverity>0.001</initialSeverity>
	<minSeverity>0</minSeverity>
	<maxSeverity>1</maxSeverity>
    <priceImpact>false</priceImpact>
    <isBad>false</isBad>
    <makesAlert>false</makesAlert>
    <everCurableByItem>false</everCurableByItem>
	<stages>
      <li>
        <label>disturbed mind</label>
      </li>
      <li>
        <label>peace of mind</label>
        <minSeverity>0.2</minSeverity>
        <socialFightChanceFactor>0.01</socialFightChanceFactor>
        <hungerRateFactor>0.30</hungerRateFactor>
        <painFactor>0.1</painFactor>
        <statFactors>
			<ImmunityGainSpeed>1.25</ImmunityGainSpeed>
			<HealingSpeedFactor>1.7</HealingSpeedFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>

</Defs>