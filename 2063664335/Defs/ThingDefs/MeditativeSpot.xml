<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <!--=========================== Meditation furniture ===============================-->
  
  
  <ThingDef ParentName="BuildingBase">
    <defName>MeditationSpot</defName>
    <thingClass>ImprovedMeditation.MeditationFurniture</thingClass>
    <label>meditation spot</label>
    <description>Designates a spot on the ground where pawn can meditate. Not comfortable.</description>
    <size>(1,1)</size>
    <passability>Standable</passability>
    <designationCategory>Furniture</designationCategory>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>False</useHitPoints>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <socialPropernessMatters>true</socialPropernessMatters>
    <rotatable>false</rotatable>
    <graphicData>
      <texPath>Things/Building/MeditationSpot/MeditationSpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>0.80</uiIconScale>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
      <Comfort>0.3</Comfort>
    </statBases>
    <building>
      <joyKind>Meditative</joyKind>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
  </ThingDef>
  
  
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>MeditationCushion</defName>
    <thingClass>ImprovedMeditation.MeditationFurniture</thingClass>
    <label>meditation cushion</label>
    <description>A soft seat. Great for relaxation and meditation. Can be used in bedroom, rec room, and elsewhere.</description>
    <rotatable>false</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.25</fillPercent>
    <pathCost>30</pathCost>
    <canOverlapZones>false</canOverlapZones>
	<graphicData>
      <texPath>Things/Building/MeditationCushion/MeditationCushion</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.2</drawSize>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <uiIconScale>0.80</uiIconScale>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToBuild>1400</WorkToBuild>
      <Mass>4</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>2</Beauty>
      <Comfort>0.6</Comfort>
    </statBases>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <building>
      <joyKind>Meditative</joyKind>
      <isSittable>true</isSittable>
    </building>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
  </ThingDef>
  
  
</Defs>
  